<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="acceptance_check_list_category_tree_view">
        <field name="name">acceptance.checklist.category.tree</field>
        <field name="model">acceptance.checklist.category</field>
        <field name="arch" type="xml">
            <tree string="Acceptance categories" editable="bottom">
                <field name="complete_name" />
                <field name="name" />
                <field name="parent_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_acceptance_check_list_category">
        <field name="name">Acceptance Categories</field>
        <field name="res_model">acceptance.checklist.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Acceptance Categories"
        parent="acceptance_menu_check_list_parent"
        id="acceptance_check_list_category_menu"
        action="action_acceptance_check_list_category"
        groups="group_acceptance_manager"
        sequence="10"/>

</odoo>
