<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_form_view_acceptance">
        <field name="name">product.template.common.acceptance</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="groups_id" eval="[(4, ref('gts_acceptance_management.group_acceptance_user'))]"/>
        <field name="arch" type="xml">
            <page name="inventory" position="inside">
                <group name="acceptance_management" string="Acceptance Management">
                    <field name="acceptance_triggers" nolabel="1">
                        <tree string="Acceptance Triggers" editable="bottom">
                            <field name="trigger" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="test"/>
                            <field name="user"/>
                            <field name="partners" widget="many2many_tags"/>
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>

</odoo>
