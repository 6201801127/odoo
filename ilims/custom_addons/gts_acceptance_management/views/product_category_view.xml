<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_category_acceptance_form_view">
        <field name="name">product.category.acceptance</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <group name="first" position="after">
                <group name="acceptance_management" string="Acceptance Management">
                    <field name="acceptance_triggers" nolabel="1">
                        <tree string="Acceptance Triggers" editable="bottom">
                            <field name="trigger" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="test"/>
                            <field name="user"/>
                            <field name="partners" widget="many2many_tags" />
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>
</odoo>
