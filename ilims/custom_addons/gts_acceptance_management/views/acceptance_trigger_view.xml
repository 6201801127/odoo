<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="acceptance_trigger_form_view">
        <field name="name">acceptance.trigger.form</field>
        <field name="model">acceptance.trigger</field>
        <field name="arch" type="xml">
            <form string="Quality control trigger">
                <group>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="partner_selectable"/>
                </group>
                <group>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="acceptance_trigger_tree_view">
        <field name="name">acceptance.trigger.tree</field>
        <field name="model">acceptance.trigger</field>
        <field name="arch" type="xml">
            <tree string="Acceptance Triggers" editable="bottom">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

</odoo>
