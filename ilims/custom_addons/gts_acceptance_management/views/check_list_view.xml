<odoo>

    <record model="ir.ui.view" id="acceptance_check_list_form_view">
        <field name="name">acceptance.checklist.form</field>
        <field name="model">acceptance.checklist</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" class="oe_inline"/>
                            <!--<field name="type"/>-->
                            <!--<field name="object_id" attrs="{'invisible': [('type','=','generic')]}"/>-->
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="category" required="1"
                                   options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <!--<field name="fill_correct_values" invisible="1"/>-->
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <field name="check_list_lines" nolabel="1">
                        <tree editable="bottom">
                            <!--<field name="sequence" widget="handle"/>-->
                            <field name="name"/>
                            <!--<field name="type"/>-->
                            <!--<field name="min_value"/>-->
                            <!--<field name="max_value"/>-->
                            <!--<field name="uom_id"/>-->
                            <!--<field name="ql_values"/>-->
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="acceptance_check_list_tree_view">
        <field name="name">acceptance.checklist.tree</field>
        <field name="model">acceptance.checklist</field>
        <field name="arch" type="xml">
            <tree string="Checklists">
                <field name="name"/>
                <field name="category"/>
                <!--<field name="type"/>-->
                <!--<field name="object_id"/>-->
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_acceptance_check_list">
        <field name="name">Acceptance Criteria</field>
        <field name="res_model">acceptance.checklist</field>
        <field name="view_mode">tree,form</field>
    </record>

