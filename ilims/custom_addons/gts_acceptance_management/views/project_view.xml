<odoo>

    <record id="project_project_inherit_form_views_acceptance" model="ir.ui.view">
        <field name="name">project.project.form.view.acceptance.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="contract.views_project_project_contract_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_contracts']" position="after">
                <button class="oe_stat_button" name="open_acceptance" type="object" icon="fa-list-alt"
                        groups="gts_acceptance_management.group_acceptance_user,gts_acceptance_management.group_acceptance_manager,gts_groups.group_acceptance_management_can_create,gts_groups.group_acceptance_management_can_view">
                    <field string="Acceptance" name="acceptance_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
