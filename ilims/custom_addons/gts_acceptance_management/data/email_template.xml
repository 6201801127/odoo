        <field name="subject">Acceptance Approved (${object.name})</field>
        <field name="email_from"></field>
        <field name="partner_to"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear ${object.user.name},</p><br/>
                <p>Acceptance <strong>(${object.name})</strong> has been Approved by <strong>${user.name}</strong>.</p>
                <br/>
                <p>Please click on the link below to view the Acceptance.</p>
