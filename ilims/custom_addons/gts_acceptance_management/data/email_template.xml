    <record id="acceptance_submit_for_approval" model="mail.template">
        <field name="name">Requested for Acceptance Approval</field>
        <field name="model_id" ref="gts_acceptance_management.model_acceptance_inspection"/>
        <field name="subject">Requested for Acceptance Approval (${object.name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear Sir,</p><br/>
                <p>Acceptance has been requested for Approval before due date ${object.due_date}</p>
                <br/>
                <p>Please click on the link below to view the Acceptance.</p>
                <br/>
                <p><a href="_inspection_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
