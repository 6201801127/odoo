<odoo>

    <record id="acceptance_check_list_ready_for_evaluation_email" model="mail.template">
        <field name="name">Acceptance Ready for Evaluation.</field>
        <field name="model_id" ref="gts_acceptance_management.model_acceptance_inspection"/>
        <field name="subject">Acceptance (${object.name}) Ready for Evaluation.</field>
        <field name="email_from"></field>
        <field name="partner_to"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Acceptance (<b>${object.name}</b>) is ready for Evaluation, please click the below link to view Acceptance.</p>
                <p>
                <br/>
                <a href="_inspection_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="acceptance_check_list_evaluation_waiting_approval_email" model="mail.template">
        <field name="name">Acceptance Waiting for Approval.</field>
        <field name="model_id" ref="gts_acceptance_management.model_acceptance_inspection"/>
        <field name="subject">Requested to Approve Acceptance (${object.name}).</field>
        <field name="email_from"></field>
        <field name="partner_to"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Acceptance (<b>${object.name}</b>) is waiting for Approval and due date id <b>${object.due_date}</b>, please click the below link to view Acceptance.</p>
                <p>
                <br/>
                <a href="_inspection_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

