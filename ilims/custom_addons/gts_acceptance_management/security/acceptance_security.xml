    <record model="ir.module.category" id="module_category_acceptance">
        <field name="name">Acceptance Management App</field>
    </record>

    <record id="group_acceptance_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_acceptance" />
    </record>

    <record id="group_acceptance_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_acceptance" />
        <field name="implied_ids" eval="[(4, ref('group_acceptance_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

