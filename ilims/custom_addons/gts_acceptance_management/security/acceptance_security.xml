    <!--ir rule-->

    <record id="acceptance_plan_project_user_rule" model="ir.rule">
        <field name="name">Acceptance Plan: Project linked record visible</field>
        <field name="model_id" ref="model_acceptance_inspection"/>
        <field name="domain_force">[
        '|',
            ('project_id.privacy_visibility', '!=', 'followers'),
            ('allowed_user_ids', 'in', user.ids),
        ]
        </field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="acceptance_plan_project_office_rule" model="ir.rule">
        <field name="name">Acceptance Plan: Project Office all record visible</field>
        <field name="model_id" ref="model_acceptance_inspection"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>

    <record id="acceptance_lines_project_user_rule" model="ir.rule">
        <field name="name">Acceptance Lines: Project linked record visible</field>
        <field name="model_id" ref="model_acceptance_inspection_line"/>
        <field name="domain_force">[
        '|',
            ('inspection_id.project_id.privacy_visibility', '!=', 'followers'),
            ('allowed_user_ids', 'in', user.ids),
        ]
        </field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="acceptance_lines_project_office_rule" model="ir.rule">
        <field name="name">Acceptance Lines: Project Office all record visible</field>
        <field name="model_id" ref="model_acceptance_inspection_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>

