<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="acceptance_approval_wizard_form_view">
        <field name="name">acceptance.approval.wizard.form.view</field>
        <field name="model">acceptance.approval.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="acceptance_id" invisible="1"/>
                        <field name="user_id" required="1"
                               options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        <label for="reminder_days"/>
                        <div>
                            <field name="reminder_days" class="oe_inline"/>Day(s)
                        </div>
                    </group>
                    <group>
                        <field name="approval_due_date" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="ask_for_approval" string="Submit" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_approval_wizard_acceptance" model="ir.actions.act_window">
		<field name="name">Submit for Approval</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">acceptance.approval.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="acceptance_approval_wizard_form_view"/>
		<field name="target">new</field>
	</record>

</odoo>
