<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_qc_test_set_test_form" model="ir.ui.view">
        <field name="name">acceptance.inspection.set.checklist.form</field>
        <field name="model">acceptance.inspection.set.checklist</field>
        <field name="arch" type="xml">
            <form string="Set Acceptance Criteria" version="7.0">
                <group>
                    <group>
                        <field name="check_list" required="1"
                        options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_check_list" string="Select" type="object" class="oe_highlight"/>
                    <button special="cancel" class="oe_link" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_acceptance_inspection_set_check_list" model="ir.actions.act_window">
        <field name="name">Set Acceptance Criteria</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acceptance.inspection.set.checklist</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
