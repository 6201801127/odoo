<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="support_team_view_form_inherit_website_support_form" model="ir.ui.view">
        <field name="name">support.team.form.inherit.website.form.support</field>
        <field name="model">support.team</field>
        <field name="inherit_id" ref="gts_ticket_management.support_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_form']" position="replace">
                <div id='website_form' attrs="{'invisible': [('use_website_support_form','=',False)]}">
                    <div attrs="{'invisible': ['|', ('use_website_support_form', '=', False), ('feature_form_url','=',False)]}" class="mt16">
                        <button role="button" class="btn-link" icon="fa-arrow-right">
                            <field name="feature_form_url" readonly="1" class="oe_inline" widget="url" text="Preview Ticket Form"/>
                        </button>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
