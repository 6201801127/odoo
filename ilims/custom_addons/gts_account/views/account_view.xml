<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Tax Master Configuration -->
    <record id="account_tax_form_view_inherit" model="ir.ui.view">
        <field name="name">account.tax.inherit.form.views</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='definition']//div//group[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='definition']//div//group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_options']//group[1]//group[1]//field[@name='analytic']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_tax_form_l10in_view_inherit" model="ir.ui.view">
        <field name="name">account.tax.inherit.l10in.form.views</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="l10n_in.view_tax_form_inherit_l10n_in"/>
        <field name="arch" type="xml">
            <field name="l10n_in_reverse_charge" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="account_journal_form_view_inherit" model="ir.ui.view">
        <field name="name">account.journal.inherit.form.views</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='bank_account']//group[1]//group[1]//field[@name='profit_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='bank_account']//group[1]//group[1]//field[@name='loss_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_settings']//group[1]//group[1]//field[@name='restrict_mode_hash_table']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_settings']//group[1]//group[5]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_settings']//group[1]//group[6]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_settings']//group[1]//group[@name='group_alias_ro']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_settings']//group[1]//group[@name='group_alias_no_domain']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='advanced_settings']//group[1]//group[@name='group_alias_edit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='bank_account']//group[1]//group[2]//field[@name='bank_statements_source']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_account_form_view_inherit" model="ir.ui.view">
        <field name="name">account.account.inherit.form.views</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <field name="deprecated" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="account_fiscal_position_form_view_inherit" model="ir.ui.view">
        <field name="name">account.fiscal.position.inherit.form.views</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <field name="vat_required" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

