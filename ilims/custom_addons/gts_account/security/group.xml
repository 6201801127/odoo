    <!--ir.rule-->

    <record id="analytic_account_project_user_rule" model="ir.rule">
        <field name="name">Analytic account on basis of project user/manager</field>
        <field name="model_id" ref="account.model_account_analytic_account"/>
        <field name="domain_force">[
            ('allowed_user_ids', 'in', user.ids),
        ]
        </field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="analytic_account_project_manager_rule" model="ir.rule">
        <field name="name">Analytic account all records</field>
        <field name="model_id" ref="account.model_account_analytic_account"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>

</odoo>
