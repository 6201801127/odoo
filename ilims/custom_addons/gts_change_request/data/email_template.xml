<odoo>

    <record id="change_request_verified_email" model="mail.template">
        <field name="name">Change Request Verified</field>
        <field name="model_id" ref="gts_change_request.model_change_request"/>
        <field name="subject">Change Request (${object.name}) Verified</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear ${object.requested_by.name},</p><br/>
                <p>Change Request (<b>${object.name}</b>) has been verified by ${user.name}.</p>
                <p>Please click on the link below to view CR.</p>
                <p>
                <br/>
                <a href="_cr_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View CR</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="change_request_submit_for_approval" model="mail.template">
