<odoo>

    <record model="ir.module.category" id="module_category_change_request">
        <field name="name">Change Request Rights</field>
        <field name="sequence">103</field>
    </record>

    <record id="group_change_management_can_create" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="gts_change_request.module_category_change_request"/>
    </record>

    <record id="group_change_management_can_view" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="gts_change_request.module_category_change_request"/>
    </record>
    <record id="group_cr_approval_access" model="res.groups">
        <field name="name">CR Approval Access</field>
        <field name="category_id" ref="gts_change_request.module_category_change_request"/>
    </record>

    <record id="group_cr_close_approval_access" model="res.groups">
        <field name="name">CR Close Approval Access</field>
        <field name="category_id" ref="module_category_change_request"/>
    </record>

    <!-- ir rule-->

    <record id="change_request_project_user_rule" model="ir.rule">
        <field name="name">CR: Project linked record visible</field>
        <field name="model_id" ref="model_change_request"/>
        <field name="domain_force">[
        '|',
            ('project_id.privacy_visibility', '!=', 'followers'),
            ('allowed_user_ids', 'in', user.ids),
        ]
        </field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="change_request_project_office_rule" model="ir.rule">
        <field name="name">CR: Project Office all record visible</field>
        <field name="model_id" ref="model_change_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>

</odoo>
