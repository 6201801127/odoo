<odoo>

    <record id="project_task_form_view_cr" model="ir.ui.view">
        <field name="name">cr.task.form.view.new.cr</field>
        <field name="model">cr.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="cr_id" invisible="1"/>
                            <field name="project_id" invisible="1"/>
                            <field name="stakeholder_ids" invisible="1"/>
                            <field name="user_id" required="1" domain="[('id', 'in', stakeholder_ids)]"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="date_deadline" required="1"/>
                            <field name="planned_hours" widget="timesheet_uom_no_toggle" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="button_create" string="Create" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_task_cr" model="ir.actions.act_window">
        <field name="name">Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cr.task</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_task_form_view_cr"/>
        <field name="target">new</field>
    </record>

</odoo>
