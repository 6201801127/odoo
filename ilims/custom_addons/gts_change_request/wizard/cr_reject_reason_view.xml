<odoo>

    <record id="view_reject_cr_wizard_form" model="ir.ui.view">
        <field name="name">reject.cr.wizard.form.view</field>
        <field name="model">reject.cr.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="cr_id" invisible="1"/>
                    <field name="rejection_reason" required="1"/>
                </sheet>
                <footer>
                    <button name="button_reject" string="Reject" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_reject_cr_wizard" model="ir.actions.act_window">
        <field name="name">Rejection Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reject.cr.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_reject_cr_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
