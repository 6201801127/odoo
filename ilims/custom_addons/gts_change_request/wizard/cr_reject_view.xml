<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="cr_rejected_form_view_submit">
        <field name="name">wizard.cr.reject.form.view</field>
        <field name="model">wizard.cr.reject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="rejection_reason" required="1"/>
                </sheet>
                <footer>
                    <button name="button_reject" string="Reject" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rejected_cr_approval" model="ir.actions.act_window">
		<field name="name">Rejection Reason</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.cr.reject</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="cr_rejected_form_view_submit"/>
		<field name="target">new</field>
	</record>

</odoo>
