<odoo>

    <record id="view_change_request_form" model="ir.ui.view">
        <field name="name">change.request.form.view</field>
        <field name="model">change.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_verify" string="Verify" type="object" class="oe_highlight"
                            groups="gts_change_request.group_change_management_can_create"
                            attrs="{'invisible' : [('state', 'not in', ['draft'])]}"/>
                    <button name="%(gts_change_request.action_submit_for_approval_cr)d" string="Submit for Approval"
                            type="action" class="oe_highlight"
                            attrs="{'invisible' : [('state', 'not in', ['verified', 'rejected'])]}"
                            groups="gts_change_request.group_change_management_can_create"/>
                    <button name="button_approved" string="Approve" type="object" class="oe_highlight"
                            groups="gts_change_request.group_cr_approval_access"
                            attrs="{'invisible' : [('state', '!=', 'waiting_for_approval')]}"/>
                    <button name="%(gts_change_request.action_rejected_cr_approval)d" string="Reject" type="action"
                            class="oe_highlight"
                            groups="gts_change_request.group_cr_approval_access"
                            attrs="{'invisible' : [('state', '!=', 'waiting_for_approval')]}"/>
                    <button name="%(gts_change_request.action_project_task_cr)d" string="Create Task"
                            type="action" class="oe_highlight"
                            groups="gts_change_request.group_change_management_can_create"
                            attrs="{'invisible' : ['|', ('state', '!=', 'approved'), ('task_id', '!=', False)]}"/>
                    <button name="%(gts_change_request.action_close_cr_wizard)d" string="Request to Close" type="action"
                            class="oe_highlight" groups="gts_change_request.group_change_management_can_create"
                            attrs="{'invisible' : ['|', ('is_request_to_close', '=', True), '|', ('state', '!=', 'approved'), ('task_id', '=', False)]}"/>
                    <button name="button_approve_close" string="Approve to Close" type="object" class="oe_highlight"
                            groups="gts_change_request.group_cr_close_approval_access"
                            attrs="{'invisible' : ['|', ('is_request_to_close', '=', False), '|', ('state', '!=', 'approved'), ('task_id', '=', False)]}"/>
                    <button name="%(gts_change_request.action_reject_cr_wizard)d" string="Reject" type="action"
                            class="oe_highlight"
                            groups="gts_change_request.group_cr_close_approval_access"
                            attrs="{'invisible' : ['|', ('is_request_to_close', '=', False), '|', ('state', '!=', 'approved'), ('task_id', '=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" required="1"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <!--<field name="name" required="1" attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>-->
                            <field name="cr_category" options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}" required="1"/>
                            <field name="planned_hours" widget="float_time" required="1"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <field name="is_from_project" invisible="1"/>
                            <field name="project_id" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   attrs="{'readonly' : ['|', ('state', '!=', 'draft'), ('is_from_project', '=', True)]}"/>
                            <field name="attach_cr_document" filename="attach_cr_document_filename"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <field name="attach_cr_document_filename" invisible="1"/>
                            <field name="impact_on_project"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                        </group>
                        <group>
                            <field name="task_id" readonly="1" attrs="{'invisible' : [('task_id', '=', False)]}"/>
                            <field name="cr_date" required="1"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <field name="approval_due_date" readonly="1"
                                   attrs="{'invisible' : [('approval_due_date', '=', False)]}"/>
                            <field name="closure_due_date" readonly="1"
                                   attrs="{'invisible' : [('closure_due_date', '=', False)]}"/>
                            <field name="stakeholder_ids" widget="many2many_tags" invisible="1"/>
                            <field name="requested_by" required="1" domain="[('id', 'in', stakeholder_ids)]"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="verified_by" readonly="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   attrs="{'invisible': [('verified_by', '=', False)]}"/>
                            <field name="approved_by" readonly="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   attrs="{'invisible': [('approved_by', '=', False)]}"/>
                            <field name="cr_reason"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <field name="cr_cost" attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <field name="severity" widget="priority"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <field name="user_id" invisible="1"/>
                            <field name="is_request_to_close" invisible="1"/>
                            <field name="is_closure_rejected" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description_page" string="Description">
                            <field name="description" nolabel="1" placeholder="Describe your project..." type="html"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}"/>
                            <div class="d-none oe_clear"/>
                        </page>
                        <page string="Documents">
                            <field name="ir_attachment_ids" required="True"
                                   attrs="{'readonly' : [('state', 'not in', ['draft', 'rejected'])]}" force_save="1"
                                   context="{'default_res_model': 'change.request', 'default_res_id': id}">
                                <tree editable="bottom">
                                    <field name="res_model" force_save="1" invisible="1"/>
                                    <field name="res_id" force_save="1" invisible="1"/>
                                    <field name="name"/>
                                    <field name="document_type_id" string='Document'
                                           options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                    <field name="type"/>
                                    <field name="datas" string="Attachment"
                                           attrs="{'invisible': [('type', '=', 'url')]}"/>
                                    <field name="url" widget="url" string="URL"
                                           attrs="{'invisible': [('type', '=', 'binary')]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_change_request_tree" model="ir.ui.view">
        <field name="name">change.request.tree.view</field>
        <field name="model">change.request</field>
        <field name="arch" type="xml">
            <tree>
                <!--<field name="cr_no"/>-->
                <field name="name"/>
                <field name="cr_date"/>
                <field name="requested_by"/>
                <field name="approved_by"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_change_request_kanban" model="ir.ui.view">
        <field name="name">change.request.kanban.view</field>
        <field name="model">change.request</field>
        <field name="arch" type="xml">
            <kanban quick_create="false" default_group_by="state">
                <field name="state" readonly="1"/>
                <!--<field name="cr_no"/>-->
                <field name="name"/>
                <field name="cr_date"/>
                <field name="requested_by"/>
                <field name="approved_by"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title">
                                        <span style="font-size:16px">
                                            <field name="name"/>
                                        </span>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <span>
                                        <t t-esc="record.cr_date.value"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="requested_by"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_change_request_pivot" model="ir.ui.view">
        <field name="name">change.request.pivot.view</field>
        <field name="model">change.request</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="name" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="view_change_request_activity" model="ir.ui.view">
        <field name="name">change.request.activity.view</field>
        <field name="model">change.request</field>
        <field name="arch" type="xml">
            <activity string="Contracts">
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <!--<field name="name" display="full"/>-->
                            <field name="name" muted="1" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="action_change_request_view" model="ir.actions.act_window">
        <field name="name">Change Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">change.request</field>
        <field name="view_mode">tree,form,kanban,pivot,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Change Request
            </p>
        </field>
    </record>

</odoo>
