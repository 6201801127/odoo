<odoo>

    <!--************************ CR Category Master *************************-->

    <record id="cr_category_tree" model="ir.ui.view">
        <field name="name">cr.category.tree</field>
        <field name="model">cr.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="cr_category_form" model="ir.ui.view">
        <field name="name">cr.category.form</field>
        <field name="model">cr.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cr_category" model="ir.actions.act_window">
        <field name="name">Change Request Category</field>
        <field name="res_model">cr.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Change Request Category
            </p>
        </field>
    </record>

    <menuitem action="action_cr_category"
              id="menu_cr_category"
              name="CR Category"
              parent="project.menu_project_config"
              sequence="10"/>

</odoo>
