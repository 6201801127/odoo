        <field name="domain">[('state', '=', 'approved'), ('is_closure_rejected', '=', False), ('is_request_to_close',
            '=', False)]
        </field>
        <field name="context">{'create': False, 'edit': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
