<odoo>

    <record id="view_project_project_inherit_form_change_request" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit.change.request</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="quality_control_oca.project_project_inherit_form_views_quality"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_quality_control']" position="after">
                <button class="oe_stat_button" name="open_change_requests" type="object" icon="fa-list"
                        groups="gts_change_request.group_cr_approval_access,gts_change_request.group_cr_close_approval_access,gts_change_request.group_change_management_can_create,gts_change_request.group_change_management_can_view">
                    <field string="Change Request" name="change_request_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
