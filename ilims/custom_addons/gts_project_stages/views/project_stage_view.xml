<odoo>

    <!--************************ Project Role *************************-->

    <record id="view_project_stage_form" model="ir.ui.view">
        <field name="name">project.stage.form.view</field>
        <field name="model">project.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="fold"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_stage_tree" model="ir.ui.view">
        <field name="name">project.stage.tree.view</field>
        <field name="model">project.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_project_stage_view" model="ir.actions.act_window">
        <field name="name">Project Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Project Stage
            </p>
        </field>
    </record>

    <menuitem action="action_project_stage_view"
              id="menu_project_stage"
              name="Project Stage"
              parent="project.menu_project_config"
              sequence="11"/>

</odoo>
