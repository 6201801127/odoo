<odoo>

    <record id="task_activity_email_reminder" model="mail.template">
        <field name="name">Task Activity Reminder</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Task Activity Reminder.</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi,</p><br/>
                <p>Reminder to close the activity assigned to you for Task (<b>${object.name}</b>).</p><br/>
                <p>Click the below link to view Task.</p>
                <p>
                <br/>
                <a href="_task_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thank you.</p>
                ]]>
        </field>
    </record>

</odoo>