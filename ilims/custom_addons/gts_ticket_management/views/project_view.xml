<odoo>

    <record id="views_project_project_inherit_form_ticket" model="ir.ui.view">
        <field name="name">project.project.form.ticket.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="gts_project_cost_analysis.view_project_project_inherit_cost_analysis"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_analytics']" position="after">
                <button class="oe_stat_button" name="open_tickets" type="object" icon="fa-list-ol"
                        groups="gts_ticket_management.group_support_ticket_user,gts_groups.group_helpdesk_management_can_create,gts_groups.group_helpdesk_management_can_view">
                    <field string="Tickets" name="ticket_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
