<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_support_ticket_mgmt">
        <field name="name">Support Ticket App Management</field>
        <field name="description">Support &amp; Service</field>
        <field name="sequence">14</field>
    </record>

    <record id="group_support_ticket_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="gts_ticket_management.module_category_support_ticket_mgmt"/>
    </record>

    <record id="group_support_ticket_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="gts_ticket_management.module_category_support_ticket_mgmt"/>
        <field name="implied_ids" eval="[(4, ref('group_support_ticket_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_use_sla" model="res.groups">
        <field name="name">Show SLA Policies</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4, ref('gts_ticket_management.group_support_ticket_manager'))]"/>
    </record>

    <!--ir rule-->

    <record id="support_team_manager_rule" model="ir.rule">
        <field name="name">Team Administrator</field>
        <field name="model_id" ref="model_support_team"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_support_ticket_manager'))]"/>
    </record>

    <record id="support_ticket_manager_rule" model="ir.rule">
        <field name="name">Ticket Administrator</field>
        <field name="model_id" ref="model_support_ticket"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>

    <record id="support_team_user_rule" model="ir.rule">
        <field name="name">Support Team User</field>
        <field name="model_id" ref="model_support_team"/>
        <field name="domain_force">['|', ('visibility_member_ids','in', user.id), ('visibility_member_ids','=',
            False)]
        </field>
        <field name="groups" eval="[(4, ref('group_support_ticket_user'))]"/>
    </record>

    <record id="support_ticket_user_rule" model="ir.rule">
        <field name="name">Support Ticket User</field>
        <field name="model_id" ref="model_support_ticket"/>
        <field name="domain_force">['|', ('team_id.visibility_member_ids','in', user.id),
            ('team_id.visibility_member_ids','=', False), '|',
            ('project_id.privacy_visibility', '!=', 'followers'), ('allowed_user_ids', 'in', user.ids)]
        </field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="support_ticket_company_rule" model="ir.rule">
        <field name="name">Project: multi-company</field>
        <field name="model_id" ref="model_support_ticket"/>
        <field name="domain_force">['|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids),
            ]
        </field>
    </record>

    <record model="ir.rule" id="support_team_company_ir_rule">
        <field name="name">Project: multi-company</field>
        <field name="model_id" ref="model_support_team"/>
        <field name="domain_force">['|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids),
            ]
        </field>
    </record>

    <record id="support_sla_company_rule" model="ir.rule">
        <field name="name">Project: multi-company</field>
        <field name="model_id" ref="model_support_sla"/>
        <field name="domain_force">['|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids),
            ]
        </field>
    </record>

    <record id="support_tickets_portal_ticket_rule" model="ir.rule">
        <field name="name">Tickets: portal users: portal or following</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="domain_force">[
            '|',
            ('message_partner_ids', 'child_of', [user.partner_id.commercial_partner_id.id]),
            ('message_partner_ids', 'in', [user.partner_id.id])
            ]
        </field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <record id="support_sla_report_analysis_rule_manager" model="ir.rule">
        <field name="name">SLA Report: multi-company</field>
        <field name="model_id" ref="model_support_sla_report_analysis"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]
        </field>
    </record>

</odoo>
