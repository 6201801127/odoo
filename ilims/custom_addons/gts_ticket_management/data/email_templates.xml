<odoo>

    <record id="ticket_created_email_assignedto_stakeholder" model="mail.template">
        <field name="name">Ticket Creation</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="subject">Ticket :(${object.name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Ticket (<b>${object.name}</b>) has been created by ${user.name} for customer ${object.partner_id.name}, please click the below link to view.</p>
                <p>
                <br/>
                <a href="_ticket_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="ticket_updated_notification_email_customer" model="mail.template">
        <field name="name">Ticket Updated</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="subject">Ticket Updated (${object.sequence_name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear ${object.sudo().partner_id.name or 'Madam/Sir'},</p><br/>
                <p>We have updated the request raised against ticket (<b>${object.name}</b>) by you and it is under ${object.stage_id.name}.</p>
                <div style="text-align: center; margin: 16px 0px 16px 0px;">
                    <a style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;" href="${object.get_portal_url()}">View the ticket</a><br/>
                </div>
                <p>Thank you,</p>
                ]]>
        </field>
    </record>

    <record id="ticket_updated_to_stakeholder" model="mail.template">
        <field name="name">Ticket Updated</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="subject">Ticket Updated (${object.name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Ticket (<b>${object.name}</b>) is ${object.stage_id.name}, please click the below link to view.</p>
                <p>
                <br/>
                <a href="_ticket_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="ticket_assigned_tome_email" model="mail.template">
        <field name="name">Ticket Assigned</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="subject">Ticket Assigned (${object.name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Ticket (<b>${object.name}</b>) has been assigned to ${object.user_id.name}, please click the below link to view.</p>
                <p>
                <br/>
                <a href="_ticket_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="online_sync_cron_ticket_activity_reminder" model="ir.cron">
        <field name="name">Ticket Activity Reminder</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="state">code</field>
        <field name="code">model.ticket_activity_reminder()</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="ticket_activity_email_reminder" model="mail.template">
        <field name="name">Ticket Activity Reminder</field>
        <field name="model_id" ref="gts_ticket_management.model_support_ticket"/>
        <field name="subject">Ticket Activity Reminder.</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi,</p><br/>
                <p>Reminder to close the activity assigned to you for Ticket (<b>${object.name}</b>).</p><br/>
                <p>Click the below link to view Ticket.</p>
                <p>
                <br/>
                <a href="_ticket_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thank you.</p>
                ]]>
        </field>
    </record>

</odoo>
