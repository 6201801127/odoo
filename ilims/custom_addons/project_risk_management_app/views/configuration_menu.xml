                            <field name="name" required="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_mitigation_type" model="ir.actions.act_window">
        <field name="name">Mitigation Type</field>
