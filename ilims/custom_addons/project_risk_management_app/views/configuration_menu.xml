                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_response" model="ir.actions.act_window">
        <field name="name">Response Of Risk</field>
        <field name="res_model">risk.response</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_risk_response_tree"/>
    </record>

    <!-- create mitigation type -->
    <record id="view_project_mitigation_type_tree" model="ir.ui.view">
        <field name="name">project.mitigation.type.tree</field>
        <field name="model">mitigation.type</field>
        <field name="arch" type="xml">
