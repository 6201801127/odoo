            </tree>
        </field>
    </record>

    <record id="view_project_mitigation_type_form" model="ir.ui.view">
        <field name="name">project.mitigation.type.form</field>
        <field name="model">mitigation.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
