        <field name="name">project.risk.category.form</field>
        <field name="model">risk.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="internal_page" string="Internal Note">
                            <field name="internal_note"/>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_category" model="ir.actions.act_window">
        <field name="name">Category Of Risk</field>
        <field name="res_model">risk.category</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_risk_category_tree"/>
    </record>

    <!-- create risk response -->
    <record id="view_project_risk_response_tree" model="ir.ui.view">
        <field name="name">project.risk.response.tree</field>
        <field name="model">risk.response</field>
        <field name="arch" type="xml">
            <tree string="project risk type">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_project_risk_response_form" model="ir.ui.view">
        <field name="name">project.risk.response.form</field>
        <field name="model">risk.response</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
