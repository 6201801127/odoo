<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- create Risk Type -->
    <record id="view_project_risk_types_tree" model="ir.ui.view">
        <field name="name">project.risk.types.tree</field>
        <field name="model">risk.type</field>
        <field name="arch" type="xml">
            <tree string="project risk type">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_project_risk_types_form1" model="ir.ui.view">
        <field name="name">project.risk.type.form</field>
        <field name="model">risk.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="internal_page" string="Internal Note">
                            <field name="internal_note"/>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_type" model="ir.actions.act_window">
        <field name="name">Type Of Risk</field>
        <field name="res_model">risk.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_risk_types_tree"/>
    </record>

    <!-- create  risk category -->
    <record id="view_risk_category_tree" model="ir.ui.view">
        <field name="name">project.risk.category.tree</field>
