<odoo>

    <record id="view_project_form_inherit_risk" model="ir.ui.view">
        <field name="name">project.task.inherit.form.views</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="before">
                <field name="is_from_project" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                <attribute name="attrs">{'readonly': [('is_from_project', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                <attribute name="domain">[('project_id', '=', project_id), ('is_issue', '=', False), ('risk_incident',
                    '=', False)]
                </attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="is_issue" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='recurring_task']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('allow_recurring_tasks', '=', False), ('is_issue', '=',
                    True)]}
                </attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='extra_info']" position="after">
                <page string="Risk Register">
                    <field name="risk_lines_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="project_risk_id" required="1" string="Risk"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="risk_impact"/>
                            <field name="description"/>
                            <field name="category_id" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="response_id" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="type_id" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="mitigation_type_id" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="probability"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </page>
                <!--<page string="Issue Risk Register" attrs="{'invisible': [('is_issue', '=', False)]}">-->
                    <!--<field name="risk_lines_ids" nolabel="1">-->
                        <!--<tree editable="bottom">-->
                            <!--<field name="project_risk_id" required="1"-->
                                   <!--options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>-->
                            <!--<field name="risk_impact"/>-->
                            <!--<field name="description"/>-->
                            <!--<field name="category_id" required="1"-->
                                   <!--options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>-->
                            <!--<field name="response_id" required="1"-->
                                   <!--options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>-->
                            <!--<field name="type_id" required="1"-->
                                   <!--options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>-->
                            <!--<field name="probability"/>-->
                        <!--</tree>-->
                    <!--</field>-->
                <!--</page>-->
            </xpath>
            <xpath expr="//notebook//page[@name='extra_info']//group[1]//group[1]//field[@name='sequence']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='extra_info']//group[1]//group[1]//field[@name='analytic_account_id']" position="attributes">
                <attribute name="string">Project Account</attribute>
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                <attribute name="attrs">{'invisible': [('analytic_account_id', '=', False)]}</attribute>
            </xpath>

        </field>
    </record>
    <!-- added by ajay-->
    <record id="view_project_forms_inherit" model="ir.ui.view">
        <field name="name">view.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <header>
                <button name="submit_for_review" string="Submit For Review" class="btn-primary" type="object" attrs="{'invisible': ['|',('reviewer_boolean','=',True),('approver_boolean','=',True)],
                                                                                                                      'invisible': [('state','!=','draft')]}"/>
                <button name="cancel" string="Cancel" class="btn-primary" type="object" attrs="{'invisible': ['|',('reviewer_boolean','=',True),('approver_boolean','=',True)],
                                                                                                'invisible': [('state','!=','draft')]}"/>
                <button name="review" string="Review" class="btn-primary" type="object" attrs="{'invisible': ['|',('reviewer_boolean','!=',True),('state','!=','waiting for review')]}"/>
                <button name="%(set_draft_wizard_action)d" string="Set To Draft" class="btn-primary" type="action" attrs="{'invisible': ['|',('reviewer_boolean','!=',True),('state','!=','waiting for review')]}"/>
                <button name="approve" string="Approve" class="btn-primary" type="object" attrs="{'invisible': ['|',('approver_boolean','!=',True),('state','!=','waiting for approve')]}"/>
                <button name="%(reject_wizard_action)d" string="Reject" class="btn-primary" type="action" attrs="{'invisible': ['|',('approver_boolean','!=',True),('state','!=','waiting for approve')]}"/>

                <field name="state" widget="statusbar"/>
            </header>
            <xpath expr="//header" position="inside">
                <field name="stage_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='outgoing_email']" position="after">
                <field name="project_id"/>
                <field name="wbs"/>
                    <td class="o_td_label">
                        <label class="o_form_label" for="feasibility_study" data-original-title="" title="">Feasibility Study</label>
                        <span style="color: #ff0000" class="mandatory">*</span>
                    </td>
                    <field name="feasibility_study" required="1" nolabel="1"/>
                    <field name="reviewer_remarks" readonly="1"/>
                    <field name="approver_remarks" readonly="1"/>

            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="priority" widget="priority"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="analytics_account" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                <td class="o_td_label">
                    <label class="o_form_label" for="project_category" data-original-title="" title="">Project Category

                    </label>
                    <span style="color: #ff0000" class="mandatory">*</span>
                </td>
                <field name="project_category" domain="[('fixed', '=', False)]" required="1" nolabel="1" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                <field name="project_sub_category" domain="[('fixed', '=', True)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace">
                <td class="o_td_label">
                    <label class="o_form_label" for="partner_id" data-original-title="" title="">Customer

                    </label>
                    <span style="color: #ff0000" class="mandatory">*</span>
                </td>
                <field name="partner_id" required="1" nolabel="1" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                <field name="reviewer_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                <field name="approver_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                <field name="reviewer_boolean" invisible="1" />
                <field name="approver_boolean" invisible="1"/>

            </xpath>
            <xpath expr="//field[@name='end_date']" position="after">
                <field name="project_duration" readonly="1" force_save="1" style="margin-left: 30px" required="1"/>days
            </xpath>

            <xpath expr="//notebook//page[@name='settings']//group[1]//group[1]//field[@name='user_id']"
                   position="after">
                <field name="phone"/>
                <field name="email"/>
                <field name="address"/>
            </xpath>
        </field>
    </record>

