<odoo>

    <record id="risk_incident_created_email" model="mail.template">
        <field name="name">Risk Incident Creation</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Risk Incident Creation</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Risk Incident (<b>${object.name}</b>) has been created by ${user.name}, please click the below link to view.</p>
                <p>
                <br/>
                <a href="_incident_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="risk_incident_updated_email" model="mail.template">
        <field name="name">Risk Incident Updated</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Risk Incident Updated</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Risk Incident (<b>${object.sequence_name}</b>) has been updated to ${object.stage_id.name} by ${user.name}.</p>
                <br/>
                <a href="_incident_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="risk_activity_email_reminder" model="mail.template">
        <field name="name">Risk Incident Activity Reminder</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Risk Incident Activity Reminder.</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi,</p><br/>
                <p>Reminder to close the activity assigned to you for Risk Incident (<b>${object.name}</b>).</p><br/>
                <p>Click the below link to view Risk Incident.</p>
                <p>
                <br/>
                <a href="_task_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thank you.</p>
                ]]>
        </field>
    </record>

</odoo>
