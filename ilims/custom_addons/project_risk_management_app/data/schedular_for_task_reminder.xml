<?xml version="1.0"?>
<odoo>
    <data>

        <record id="task_reminder_ir_cron_scheduler" model="ir.cron">
            <field name="name">Project Task Reminder on Deadline</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="state">code</field>
            <field name="code">model.create_activity_as_reminder()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="online_sync_cron_risk_activity_reminder" model="ir.cron">
            <field name="name">Risk Incident Activity Reminder</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="state">code</field>
            <field name="code">model.risk_activity_reminder()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>
