<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- open wizard in task -->
    <record id="view_risk_incident_task_form" model="ir.ui.view">
        <field name="name">risk.wizard.task</field>
        <field name="model">risk.incident.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Incident Wizard">
                <group>
                    <group>
                        <field name="risk_incident_name"/>
                        <field name="risk_description"/>
                    </group>
                    <group>
                        <field name="project_id" domain="[('active', '=', True)]"
                               options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        <field name="user_id"
                               class="o_task_user_field"
                               options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        <field name="incident_photo" widget='image' class="oe_left oe_avatar"
                               options='{"preview_image": "image_small"}'/>
                    </group>
                </group>
                <footer>
                    <button name="create_incident_by_wizard" string="Register Risk Incident" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_task_incident_action" model="ir.actions.act_window">
        <field name="name">Create Incident</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">risk.incident.task.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_risk_incident_task_form"/>
        <field name="target">new</field>
    </record>

    <!-- open wizard in Project -->
    <record id="view_risk_incident_project_form" model="ir.ui.view">
        <field name="name">risk.wizard.project</field>
        <field name="model">risk.incident.project.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Incident Wizard">
                <group>
                    <group>
                        <field name="risk_incident_name"/>
                        <field name="risk_description"/>
                    </group>
                    <group>
                        <field name="project_id" domain="[('active', '=', True)]" invisible="1"
                               options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        <field name="user_id" class="o_task_user_field" options='{"no_open": True}'/>
                        <field name="incident_photo" widget='image' class="oe_left oe_avatar"
                               options='{"preview_image": "image_small"}'/>
                    </group>
                </group>
                <footer>
                    <button name="create_incident_by_wizard" string="Register Risk Incident " type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_project_incident_action" model="ir.actions.act_window">
        <field name="name">Create Incident</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">risk.incident.project.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_risk_incident_project_form"/>
        <field name="target">new</field>
    </record>

    <!--open wizard in project-->
    <record id="set_draft_wizard_form" model="ir.ui.view">
        <field name="name">risk.wizard.project</field>
        <field name="model">set.draft.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Set To Draft Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="reason" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Save Reason" name="save_reason"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="set_draft_wizard_action" model="ir.actions.act_window">
        <field name="name">Warning</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">set.draft.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="set_draft_wizard_form"/>
        <field name="target">new</field>
    </record>

<!--    added by ajay-->
    <record id="reject_wizard_form" model="ir.ui.view">
        <field name="name">reject.wizard.form</field>
        <field name="model">rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Set To Draft Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="reason" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Save Reason" name="save_reason"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="reject_wizard_action" model="ir.actions.act_window">
        <field name="name">Rejection Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rejection.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="reject_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
