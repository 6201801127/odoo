<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_attachment_tree_view_inherit1" model="ir.ui.view">
        <field name="name">IR Attachment Tree View</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_tree"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="document_type_id"/>
            </field>
            <xpath expr="//field[@name='res_model']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='res_field']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='res_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="ir_attachment_form_view_inherit1" model="ir.ui.view">
        <field name="name">ir.attachment.inherit1</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <label for="document_type_id" class="oe_edit_only"/>
                <h1>
                    <field name="document_type_id"/>
                </h1>
            </field>
            <xpath expr="//sheet//group[1]//group[1]//field[@name='mimetype']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet//group[1]//group[2]//field[@name='res_model']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet//group[1]//group[2]//field[@name='res_field']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet//group[1]//group[2]//field[@name='res_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet//group[1]//group[5]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="ir_attachment_search_view_inherit" model="ir.ui.view">
        <field name="name">ir.attachment.search.inherit.view</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='binary_filter']" position="after">
                <separator/>
                <filter name="project_filter" string="Project" domain="[('res_model', '=', 'project.project')]"/>
                <filter name="task_filter" string="Task" domain="[('res_model', '=', 'project.task')]"/>
                <filter name="contract_filter" string="Contract" domain="[('res_model', '=', 'partner.contract')]"/>
                <filter name="change_filter" string="Change Request" domain="[('res_model', '=', 'change.request')]"/>
                <filter name="budget_filter" string="Budget" domain="[('res_model', '=', 'crossovered.budget')]"/>
                <filter name="quality_filter" string="Quality" domain="[('res_model', '=', 'qc.inspection')]"/>
                <filter name="acceptance_filter" string="Acceptance" domain="[('res_model', '=', 'acceptance.inspection')]"/>
            </xpath>
        </field>
    </record>

    <record id="base.action_attachment" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="base.view_attachment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
            <p>
                Also you will find here all the related documents and download it by clicking on any individual
                document.
            </p>
        </field>
    </record>

</odoo>
