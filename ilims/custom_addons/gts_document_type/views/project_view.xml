<odoo>

    <record id="view_project_project_inherit_form_document_type" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit.document</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='settings']" position="after">
                <page name="document_line" string="Documents">
                    <field name="ir_attachment_ids" required="True" force_save="1"
                           context="{'default_res_model': 'project.project', 'default_res_id': id}">
                        <tree editable="bottom">
                            <field name="res_model" force_save="1" invisible="1"/>
                            <field name="res_id" force_save="1" invisible="1"/>
                            <field name="name"/>
                            <field name="document_type_id" string='Document Category'
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="type"/>
                            <field name="datas" string="Attachment" attrs="{'invisible': [('type', '=', 'url')]}"/>
                            <field name="url" widget="url" string="URL"
                                   attrs="{'invisible': [('type', '=', 'binary')]}"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
