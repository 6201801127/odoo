<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="document_type_tree_view" model='ir.ui.view'>
        <field name="name">document.type.tree</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="ocument_type_form_view" model='ir.ui.view'>
        <field name="name">document.type.form</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_document_type" model="ir.actions.act_window">
        <field name="name">Document Category</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Document Category....
            </p>
        </field>
    </record>

    <menuitem id="menu_document_type" name="Document Category"
            parent="project.menu_project_config"
            action="action_document_type"/>


</odoo>
