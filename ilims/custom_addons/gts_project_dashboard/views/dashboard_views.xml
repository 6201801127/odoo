<odoo>

    <record id="action_project_dashboard" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">project_dashboard</field>
    </record>

    <record id="action_project_dashboard_manager" model="ir.actions.client">
        <field name="name">Manager Dashboard</field>
        <field name="tag">project_dashboard_manager</field>
    </record>

    <record id="action_project_dashboard_office" model="ir.actions.client">
        <field name="name">Office Dashboard</field>
        <field name="tag">project_dashboard_office</field>
    </record>

    <menuitem name="User Dashboard"
              id="project_dashboard"
              parent="project.menu_main_pm"
              sequence="1" groups="project.group_project_user"
              action="action_project_dashboard"/>

    <menuitem name="Manager Dashboard" groups="gts_project_stages.group_project_manager_new"
              id="project_dashboard_manager"
              parent="project.menu_main_pm"
              sequence="1"
              action="action_project_dashboard_manager"/>

    <menuitem name="Office Dashboard" groups="project.group_project_manager"
              id="project_dashboard_office"
              parent="project.menu_main_pm"
              sequence="1"
              action="action_project_dashboard_office"/>

    <template id="assets_backend_dashboard" name="Project Dashboard assets inherit" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/gts_project_dashboard/static/src/js/project_dashboard.js"/>
            <script type="text/javascript" src="/gts_project_dashboard/static/src/js/manager_dashboard.js"/>
            <script type="text/javascript" src="/gts_project_dashboard/static/src/js/office_dashboard.js"/>
            <link rel="stylesheet" href="/gts_project_dashboard/static/src/css/project_dashboard.css"/>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js"></script>
            <!--<script type="text/javascript" src="/gts_project_dashboard/static/src/js/charts/Chart.bundle.js"/>-->
            <!--<script type="text/javascript" src="/gts_project_dashboard/static/src/js/charts/Chart.bundle.min.js"/>-->
            <!--<script type="text/javascript" src="/gts_project_dashboard/static/src/js/charts/Chart.js"/>-->
            <!--<script type="text/javascript" src="/gts_project_dashboard/static/src/js/charts/Chart.min.js"/>-->
        </xpath>
    </template>

</odoo>
