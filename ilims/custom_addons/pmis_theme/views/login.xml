<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="inherit_login_layout" inherit_id="website.login_layout">
            <xpath expr="//div[hasclass('oe_website_login_container')]" position="attributes">
                <attribute name="class">oe_website_login_container d-flex align-items-center flex-column justify-content-center</attribute>
            </xpath>
        </template>

        <template id="pmis_login" inherit_id="web.login" name="Login">
            <xpath expr="//form" position="replace">
                <div class="container">
                    <div class="d-flex align-items-center flex-column justify-content-center">
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="row">
                                    <div class="col-md-5 text-center user-info d-flex align-items-center flex-column justify-content-center bg-logo px-4 pt-5 pb-3">
                                        <img src="/pmis_theme/static/description/icon.png" height="80px" class="pmis-logo"/>
                                        <p class="h1"> ILMIS </p>
                                        <p class="h6" style="font-weight: 400"> Addis Ababa City Government Land Development &amp; Management Bureau </p>
                                    </div>
                                    <div class="col-md-7">

                                        <form class="oe_login_form" role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                            <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                                                <label for="db" class="col-form-label">Database</label>
                                                <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                                    <input type="text" name="db" t-att-value="request.db" id="db" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" readonly="readonly"/>
                                                    <span class="input-group-append">
                                                        <a role="button" href="/web/database/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i></a>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="mb-0 h3 pmis-login-label">Login to Portal</label>
                                            </div>
                                            <div class="form-group field-login">
                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text"><span class="fa fa-user" /></div>
                                                    </div>
                                                    <input type="text" placeholder="User ID" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
                                                </div>
                                            </div>

                                            <div class="form-group field-password">
                                                <!-- <label for="password">Password</label> -->
                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text"><span class="fa fa-lock" /></div>
                                                    </div>
                                                    <input type="password" placeholder="Password" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                                </div>
                                            </div>

                                            <p class="alert alert-danger" t-if="error" role="alert">
                                                <t t-esc="error"/>
                                            </p>
                                            <p class="alert alert-success" t-if="message" role="status">
                                                <t t-esc="message"/>
                                            </p>

                                            <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                                                <button type="submit" class="btn btn-primary btn-block font-weight-bold pmis-login-button">Submit</button>
                                                <div class="justify-content-between mt-2 d-flex small">
                                                    <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}" class="pmis-link">Don't have an account?</a>
                                                    <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}" class="pmis-link">Reset Password</a>
                                                </div>
                                                <t t-if="debug">
                                                    <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block">Log in as superuser</button>
                                                </t>
                                                <div class="o_login_auth"/>
                                            </div>

                                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
        
        <template id="pmis_signup_fields" inherit_id="auth_signup.fields">
            <xpath expr="//div[1]" position="replace">
                <div class="form-group field-login">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-envelope" /></div>
                        </div>
                        <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus"
                            autocapitalize="off" placeholder="Email" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[2]" position="replace">
                <div class="form-group field-name">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-user" /></div>
                        </div>
                        <input type="text" name="name" t-att-value="name" id="name" class="form-control" placeholder="Your Name"
                            required="required" t-att-readonly="'readonly' if only_passwords else None"
                            t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[3]" position="replace">
                <div class="form-group field-password pt-2">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-lock" /></div>
                        </div>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password"
                            required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[4]" position="replace">
                <div class="form-group field-confirm_password">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-lock" /></div>
                        </div>
                        <input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm Password" class="form-control" required="required"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[4]" position="after">
                <div class="form-group field-is_vendor">
                    <div class="input-group mb-2">
                        <span>Are you a Vendor? </span>
                        <input style="margin-left: -130px;height: 30px;" type="checkbox" name="is_tendor_vendor"
                               id="is_tendor_vendor" class="form-control"/>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="pmis_signup" inherit_id="auth_signup.signup" name="Sign Up">
            <xpath expr="//form" position="replace">
                <div class="container">
                    <div class="d-flex align-items-center flex-column justify-content-center">
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="row">
                                    <div class="col-md-5 text-center user-info d-flex align-items-center flex-column justify-content-center bg-logo px-4 pt-5 pb-3">
                                        <img src="/pmis_theme/static/description/icon.png" height="80px" class="pmis-logo"/>
                                        <p class="h1"> ILMIS </p>
                                        <p class="h6" style="font-weight: 400"> Addis Ababa City Government Land Development &amp; Management Bureau </p>
                                    </div>
                                    <div class="col-md-7">
                                        <form class="oe_signup_form" role="form" method="post" t-if="not message">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                            <t t-call="auth_signup.fields">
                                                <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                                            </t>

                                            <p class="alert alert-danger" t-if="error" role="alert">
                                                <t t-esc="error"/>
                                            </p>
                                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                                            <input type="hidden" name="token" t-att-value="token"/>
                                            <div class="text-center oe_login_buttons pt-3">
                                                <button type="submit" class="btn btn-primary btn-block pmis-signup-button"> Sign up</button>
                                                <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm pmis-link" role="button">Already have an account?</a>
                                                <div class="o_login_auth"/>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="pmis_reset" inherit_id="auth_signup.reset_password" name="Reset Password">
            <xpath expr="//form" position="replace">
                <div class="container">
                    <div class="d-flex align-items-center flex-column justify-content-center">
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="row">
                                    <div class="col-md-5 text-center user-info d-flex align-items-center flex-column justify-content-center bg-logo px-4 pt-3">
                                        <img src="/pmis_theme/static/description/icon.png" height="80px" class="pmis-logo"/>
                                        <p class="h1"> ILMIS </p>
                                        <p class="h6" style="font-weight: 400"> Addis Ababa City Government Land Development &amp; Management Bureau </p>
                                    </div>
                                    <div class="col-md-7">
                                        <form class="oe_reset_password_form" role="form" method="post" t-if="not message">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                            <t t-if="token and not invalid_token">
                                                <t t-call="auth_signup.fields">
                                                    <t t-set="only_passwords" t-value="1"/>
                                                </t>
                                            </t>

                                            <t t-if="not token">
                                                <div class="form-group field-login">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><span class="fa fa-envelope" /></div>
                                                        </div>
                                                        <input type="text" name="login" placeholder="Email" t-att-value="login" id="login" class="form-control"
                                                            autofocus="autofocus" required="required" autocapitalize="off"/>
                                                    </div>
                                                </div>
                                            </t>

                                            <p class="alert alert-danger" t-if="error" role="alert">
                                                <t t-esc="error"/>
                                            </p>
                                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                                            <input type="hidden" name="token" t-att-value="token"/>
                                            <div class="clearfix oe_login_buttons">
                                                <button type="submit" class="btn btn-primary btn-block pmis-reset-button">Confirm</button>
                                                <div class="d-flex justify-content-between align-items-center small mt-2">
                                                    <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}" class="pmis-link">Back to Login</a>
                                                    <a t-if="invalid_token" href="/web/login" class="pmis-link">Back to Login</a>
                                                </div>
                                                <div class="o_login_auth"/>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="pmis_login_assets" inherit_id="pmis_theme.pmis_login">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/pmis_theme/static/src/css/pmis_login.css" />
            </xpath>
        </template>

        <template id="pmis_signup_assets" inherit_id="pmis_theme.pmis_signup">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/pmis_theme/static/src/css/pmis_login.css" />
            </xpath>
        </template>

        <template id="pmis_reset_password_assets" inherit_id="pmis_theme.pmis_reset">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/pmis_theme/static/src/css/pmis_login.css" />
            </xpath>
        </template>
    </data>
</odoo>
