<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_project_task_stakeholder_employee" model="ir.ui.view">
        <field name="name">account.analytic.line.inherit.tree.views</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='task_id']" position="after">
                <field name="issue_id" optional="show" options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                       domain="[('project_id', '=', project_id), ('is_issue', '=', True)]"
                       attrs="{'readonly': ['|', '|', ('task_id', '!=', False), ('ticket_id', '!=', False), ('incident_id', '!=', False)]}"/>
                <field name="ticket_id" optional="show" options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                       domain="[('project_id', '=', project_id)]"
                       attrs="{'readonly': ['|', '|', ('task_id', '!=', False), ('issue_id', '!=', False), ('incident_id', '!=', False)]}"/>
                <field name="incident_id" optional="show"
                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                       domain="[('project_id', '=', project_id), ('risk_incident', '=', True)]"
                       attrs="{'readonly': ['|', '|', ('task_id', '!=', False), ('issue_id', '!=', False), ('ticket_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='task_id']" position="attributes">
                <attribute name="domain">[('project_id', '=', project_id), ('is_issue', '=', False), ('risk_incident',
                    '=', False), ('risk_incident', '=', False)]
                </attribute>
                <attribute name="attrs">{'readonly': ['|', '|', ('issue_id', '!=', False), ('ticket_id', '!=', False),
                    ('incident_id', '!=', False)]}
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
