<odoo>

    <record id="view_account_move_inherit_form_views" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="analytic_account_id" invisible="1" force_save="1"/>
                <field name="is_from_project" invisible="1"/>
            </xpath>
            <xpath expr="//notebook//page[1]//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="context">{'default_move_type': context.get('default_move_type'), 'journal_id':
                    journal_id, 'default_partner_id': commercial_partner_id, 'default_currency_id': currency_id or
                    company_currency_id, 'default_analytic_account_id': analytic_account_id}
                </attribute>
            </xpath>
            <xpath expr="//notebook//page[2]//field[@name='line_ids']" position="attributes">
                <attribute name="context">{'default_move_type': context.get('default_move_type'), 'line_ids': line_ids,
                    'journal_id': journal_id, 'default_partner_id': commercial_partner_id, 'default_currency_id':
                    currency_id or company_currency_id, 'default_analytic_account_id': analytic_account_id}
                </attribute>
            </xpath>
            <xpath expr="//notebook//page[1]//tree//field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.analytic_account_id', '!=', False)]}</attribute>
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[2]//tree//field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('display_type', 'in', ('line_section', 'line_note'))],
                    'readonly': [('parent.analytic_account_id', '!=', False)]}
                </attribute>
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
