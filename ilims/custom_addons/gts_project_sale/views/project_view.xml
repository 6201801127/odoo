<odoo>

    <record id="view_project_sale_po_invoice_button" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="gts_ticket_management.views_project_project_inherit_form_ticket"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_tickets']" position="after">
                <button class="oe_stat_button" name="open_quotation" type="object" icon="fa-dollar"
                        groups="sales_team.group_sale_salesman">
                    <field string="Quotation" name="quotation_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="open_sales" type="object" icon="fa-dollar"
                        groups="sales_team.group_sale_salesman">
                    <field string="Sales" name="sales_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="open_invoices" type="object" icon="fa-dollar"
                        groups="account.group_account_user">
                    <field string="Invoices" name="invoices_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="open_rfq" type="object" icon="fa-dollar"
                        groups="purchase.group_purchase_user">
                    <field string="RFQ" name="rfq_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="open_po" type="object" icon="fa-dollar"
                        groups="purchase.group_purchase_user">
                    <field string="Purchase Orders" name="po_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="open_bills" type="object" icon="fa-dollar"
                        groups="account.group_account_user">
                    <field string="Bills" name="bills_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_project_project_inherit_form_timesheet" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="hr_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='timesheet_settings']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="project_project_inherit_form_sale_timesheet" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="sale_timesheet.project_project_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='allow_billable_container']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
