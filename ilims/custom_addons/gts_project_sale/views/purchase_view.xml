<odoo>

    <record id="view_purchase_order_inherit_form_views" model="ir.ui.view">
        <field name="name">purchase.order.form.view.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="is_from_project" invisible="1"/>
                <field name="analytic_account_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                       attrs="{'readonly': ['|', ('state', '=', 'purchase'), ('is_from_project', '=', True)]}"/>
            </xpath>
            <xpath expr="//notebook//page[@name='products']//field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_account_analytic_id': analytic_account_id}</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='products']//field[@name='order_line']//tree//field[@name='account_analytic_id']"
                   position="attributes">
                <attribute name="attrs">{'readonly': [('parent.analytic_account_id', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
