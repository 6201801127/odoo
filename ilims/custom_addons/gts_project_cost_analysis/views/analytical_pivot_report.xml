<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_analytic_line_tree1" model="ir.ui.view">
        <field name="name">account.analytic.line.tree1</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <tree string="Analytic Entries">
                <field name="date" optional="show"/>
                <field name="name"/>
                <field name="account_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="unit_amount" sum="Quantity" optional="hide"/>
                <field name="product_uom_id" optional="hide"/>
                <field name="partner_id" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
                <field name="amount" sum="Total" optional="show"/>
                <field name="tag_ids" optional="hide" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_account_analytic_line_pivot1" model="ir.ui.view">
        <field name="name">account.analytic.line.pivot</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <pivot string="Analytic Entries" sample="1">
                <field name="account_id" type="row"/>
                <field name="unit_amount" type="measure"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_analytic_line_action_entries1">
        <field name="name">Analytic Items</field>
        <field name="res_model">account.analytic.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_analytic_line_tree1"/>
        <!--            <field name="search_view_id" ref="analytic.view_account_analytic_line_filter"/>-->
        <field name="context">{'group_by': 'account_id'}</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No activity yet
            </p>
            <p>
                In Odoo, sales orders and projects are implemented using
                analytic accounts. You can track costs and revenues to analyse
                your margins easily.
            </p>
            <p>
                Costs will be created automatically when you register supplier
                invoices, expenses or timesheets.
            </p>
            <p>
                Revenues will be created automatically when you create customer
                invoices. Customer invoices can be created based on sales orders
                (fixed price invoices), on timesheets (based on the work done) or
                on expenses (e.g. reinvoicing of travel costs).
            </p>
        </field>
    </record>

    <!--<menuitem id="menu_analytic_report" name="Analytic Report"-->
    <!--parent="project.menu_main_pm" sequence="50"/>-->

    <menuitem id="analytic_report_menu"
              name="Cost Report"
              action="gts_project_cost_analysis.account_analytic_line_action_entries1"
              parent="project.menu_project_report"
              groups="analytic.group_analytic_tags"
              sequence="50"/>

</odoo>
