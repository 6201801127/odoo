<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hr_employee_inherit_form" model="ir.ui.view">
        <field name="name">hr.employee.form.view.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="coach_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//form//notebook//page[@name='hr_settings']//group//group[@name='identification_group']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//notebook//page[@name='hr_settings']" position="after">
                <page name="role_responsibility" string="Roles &amp; Responsibilities">
                    <field name="role_responsibility"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
