<odoo>

    <!--************************ Res City *************************-->

    <record id="res_state_city_tree" model="ir.ui.view">
        <field name="name">res.state.city.tree</field>
        <field name="model">res.state.city</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record id="res_state_city_form" model="ir.ui.view">
        <field name="name">res.state.city.form</field>
        <field name="model">res.state.city</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="state_id" invisible="1"/>
                            <field name="country_id" required="1" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_res_state_city" model="ir.actions.act_window">
        <field name="name">City</field>
        <field name="res_model">res.state.city</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new city.
            </p>
        </field>
    </record>

    <menuitem action="action_res_state_city"
              id="menu_res_state_city"
              name="City"
              parent="contacts.menu_localisation"
              sequence="2"/>

    <!--************************ Res Location *************************-->

    <record id="res_location_tree" model="ir.ui.view">
        <field name="name">res.location.tree</field>
        <field name="model">res.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location_type"/>
                <field name="sub_city_id"/>
                <field name="woreda_id"/>
            </tree>
        </field>
    </record>

    <record id="res_location_form" model="ir.ui.view">
        <field name="name">res.location.form</field>
        <field name="model">res.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="sub_city_id" domain="[('parent_id','!=', False)]"
                                   attrs="{'invisible': [('location_type','!=','woreda')], 'required' :[('location_type','=','woreda')]}"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="woreda_id" domain="[('location_type','=','woreda')]"
                                   attrs="{'invisible': [('location_type','!=','kabele')], 'required' :[('location_type','=','kabele')]}"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="location_type" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_res_location" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="res_model">res.location</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Location.
            </p>
        </field>
    </record>

    <menuitem action="action_res_location"
              id="menu_res_location"
              name="Location"
              parent="contacts.menu_localisation"
              sequence="2"/>

</odoo>
