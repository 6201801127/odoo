<odoo>

    <record id="view_res_country_state_inherit_form" model="ir.ui.view">
        <field name="name">res.country.state.form.view.inherit</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="attributes">
                <attribute name="string">Region</attribute>
            </xpath>
        </field>
    </record>

    <record id="base.action_country_state" model="ir.actions.act_window">
        <field name="name">Region</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country.state</field>
        <field name="view_id" ref="base.view_country_state_tree"/>
        <field name="help">You can manage the different federal states you are working on from here. Each state is
            attached to one country.
        </field>
    </record>

    <menuitem id="contacts.menu_country_state_partner"
        action="base.action_country_state"
        parent="contacts.menu_localisation"
        sequence="2"/>

</odoo>
