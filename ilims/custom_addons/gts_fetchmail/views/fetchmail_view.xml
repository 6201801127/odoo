<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fetchmail_server_form_inherit" model="ir.ui.view">
        <field name="name">fetchmail.server.form.views.inherit</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_email_server_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='server_login_details']//group[1]//group[3]" position="replace"></xpath>
            <xpath expr="//notebook//page[@name='server_login_details']//group[1]" position="after">
                <group string="Actions to Perform on Incoming Mails">
                    <group>
                        <field name="object_id"/>
                    </group>
                    <group>
                        <field name="fetch_key" attrs="{'required': [('object_id', '!=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
