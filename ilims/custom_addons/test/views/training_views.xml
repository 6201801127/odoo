<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_test_tree" model="ir.ui.view">
            <field name="name">test.tree</field>
            <field name="model">training</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Test">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="training_date"/>
                    <field name="total_hour"/>
                    <field name="projects" widget='many2many_tags'/>
                </tree>
            </field>
        </record>

        <record id="view_test_form" model="ir.ui.view">
            <field name="name">test.form</field>
            <field name="model">training</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>
                        <group>
                            <field name="category"/>
                            <field name="name" />
                            <field name="training_date"/>
                            <field name="total_hour"/>
                            <field name="projects"/>
                            <field name="description" />
                        </group>
                        <notebook>
                            <page string="Session">
                                <group>
                                    <field name="sessions_ids" nolabel='1'>
                                        <tree editable='bottom'>
                                            <field name="name"/>
                                            <field name="trainer_name"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="training_view_kanban" model="ir.ui.view">
            <field name="name">training.view.kanban</field>
            <field name="model">training</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="category"/>
                    <field name="name" />
                    <field name="training_date"/>
                    <field name="total_hour"/>
                    <field name="projects"/>
                    <field name="description" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <h4>
                                            <i class='text-primary'></i>
                                            <b>
                                                <t t-esc="record.name.value"/>
                                            </b>
                                        </h4>
                                        <h6>
                                            <i class="fa fa-list-alt text-primary" role="img"/>
                                            <b>
                                                <t t-esc="record.category.value"/>
                                            </b>
                                        </h6>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span>
                                            <i class="fa fa-clock-o" role="img"/>
                                            <t t-esc="record.training_date.value"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="training_view_search" model="ir.ui.view">
            <field name="name">training.view.search</field>
            <field name="model">training</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="name"/>
                    <field name="category"/>
                </search>
            </field>
        </record>

        <record id="training_view_pivot" model="ir.ui.view">
            <field name="name">training.view.pivot</field>
            <field name="model">training</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <field name="training_date" type="row"/>
                    <field name="category" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="training_view_graph" model="ir.ui.view">
            <field name="name">training.view.graph</field>
            <field name="model">training</field>
            <field name="arch" type="xml">
                <graph string="Graph Description">
                    <field name="training_date" type="row"/>
                    <field name="category" type="col"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_test_view">
            <field name="name">Training Plan</field>
            <field name="res_model">training</field>
            <field name="view_mode">kanban,tree,pivot,graph,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No training plan(s) found.
                </p>
            </field>
        </record>
    </data>
</odoo>
