<odoo>

    <record id="mail_wizard_inherit_form_view" model="ir.ui.view">
        <field name="name">mail.wizard.invite.form.view.inherit</field>
        <field name="model">mail.wizard.invite</field>
        <field name="inherit_id" ref="mail.mail_wizard_invite_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='res_id']" position="after">
                <field name="stakeholder_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="domain">[('id', 'in', stakeholder_ids)]</attribute>
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
