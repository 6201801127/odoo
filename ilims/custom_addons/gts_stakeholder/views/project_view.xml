<odoo>

    <record id="view_project_project_inherit_form_views_stakeholders" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='settings']" position="after">
                <page name="stakeholder_lines" string="Stakeholders">
                    <field name="stakeholder_ids">
                        <tree editable="bottom">
                            <field name="type_of_stakeholder"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="partners_ids" widget="many2many_tags" invisible="1"/>
                            <field name="partner_id"
                                   string="User Name"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   domain="[('id', 'in', partners_ids)]"/>
                            <field name="role_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="department_id"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="role_in_project"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="type_of_communication"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="expectations"/>
                            <field name="status" widget="boolean_toggle"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_project_task_stakeholder_employee" model="ir.ui.view">
        <field name="name">project.task.inherit.stakeholder</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="stakeholder_employee_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_task_timesheet_inherit_form" model="ir.ui.view">
        <field name="name">project.task.inherit.timesheet.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_ids']//tree//field[@name='employee_id']" position="attributes">
                <attribute name="domain">[('id', 'in', parent.stakeholder_employee_ids)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
