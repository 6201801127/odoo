<odoo>

    <record id="hr_holiday_res_users_profile_view_inherited" model="ir.ui.view">
        <field name="name">res.users.form.inherit.hrholiday</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr_holidays.res_users_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_users_profile_view_inherited" model="ir.ui.view">
        <field name="name">res.users.form.inherit.hr.user</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='odoobot_state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='public']//group[@name='managers']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='hr_settings']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="mail_res_users_profile_view_inherited" model="ir.ui.view">
        <field name="name">res.users.form.inherit.hr.user</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="mail.view_users_form_simple_modif_mail"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='notification_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
