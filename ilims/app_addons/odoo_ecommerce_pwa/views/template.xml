<odoo>
    <data>
        <template id="assets_backend" name="Website PWA assets" inherit_id="web.assets_backend">
            <xpath expr="link[last()]" position="after">
                <link rel="stylesheet" href="/odoo_ecommerce_pwa/static/src/css/res_config.css"/>
            </xpath>
        </template>
        <template id="website_pwa_assets_frontend" inherit_id="website.assets_frontend" name="Website PWA">
            <xpath expr="link[last()]" position="after">
                <link rel="stylesheet" href="/odoo_ecommerce_pwa/static/src/css/pwa_offline.css"/>
            </xpath>
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/odoo_ecommerce_pwa/static/src/js/website_pwa.js"></script>
            </xpath>
        </template>
        <template id="layout" inherit_id="web.layout" name="Web layout">
            <xpath expr="//html//head//script" position="after">
                <script src="https://www.gstatic.com/firebasejs/3.7.4/firebase-app.js"></script>
                <script src="https://www.gstatic.com/firebasejs/3.7.4/firebase-messaging.js"></script>
            </xpath>
        </template>
        <template id="pwa_inherit_layout" inherit_id="website.layout">
            <xpath expr="//head/meta[last()]" position="after">
                <link rel="manifest" t-att-href="'/pwa_manifest?fw=%s' % website.id"/>
                <!-- Add to home screen for Safari on iOS -->
                <meta name="apple-mobile-web-app-capable" content="yes"/>
                <meta name="apple-mobile-web-app-status-bar-style" content="#0098ed"/>
                <meta name="apple-mobile-web-app-title" content="Progressive Web App"/>
                <link rel="apple-touch-icon" t-att-href="'/web/image/website/%s/pwa_icon/152x152' % website.id"/>
            </xpath>
            <xpath expr="//div[@id='footer']" position="inside">
                <div class="pwa_offline_icon">
                    <div style="height: 70px;background-size: 70px 70px;background-image: url('/odoo_ecommerce_pwa/static/src/img/offline.png');"/>
                </div>
                <div class="pwa_online_icon">
                    <div style="height: 70px;background-size: 70px 70px;background-image: url('/odoo_ecommerce_pwa/static/src/img/online.png');"/>
                </div>
            </xpath>
        </template>
        <template id="pwa_offline_page">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container text-center">
                        <div class="row mb64 mt64">
                            <div class="col-md-12 col-12">
                                <img src="/odoo_ecommerce_pwa/static/src/img/offline_page.png" style="height: 75px;" alt=":-("/>
                            </div>
                            <div class="col-md-12 col-12" style="font-family: sans-serif;font-size: 26px;color: #333333;">
                                You are offline
                            </div>
                            <div class="col-md-6 col-12 offset-md-3 mt16 mb16" style="font-family: sans-serif;font-size: 15px;color: #555555;">
                                The requested URL is not working right now, because you have lost internet connection. please try another page.
                            </div>
                            <div class="col-md-12 col-12 mb16">
                                <a href="/" class="btn btn-primary" style="background: #213BD7;border-radius: 21px;color: white;padding: 8px 24px;">BACK TO HOMEPAGE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
