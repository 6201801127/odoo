<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.website_pwa</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="website.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='website']" position="inside">
                    <h2>Website PWA</h2>
                    <div class="row mt16 o_settings_container" id="website_pwa_settings">
						<div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_name" string="Name"/>
								<div class="text-muted">
									Application name
								</div>
								<div class="text-muted">
									<field name="pwa_name" attrs="{'required': [('website_id', '!=', False)] }" class="oe_inline" help="help"/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_bk_color" string="Background Color"/>
								<div class="text-muted">
									Splash screen background color
								</div>
								<div class="text-muted">
									<field name="pwa_bk_color" attrs="{'required': [('website_id', '!=', False)] }" class="oe_inline" help="help"/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_short_name" string="Short Name"/>
								<div class="text-muted">
									Application's short name
								</div>
								<div class="text-muted">
									<field name="pwa_short_name" attrs="{'required': [('website_id', '!=', False)] }" class="oe_inline" help="help"/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_theme_color" string="Application theme color"/>
								<div class="text-muted">
                                    The theme color sets the color of the tool bar, and may be reflected in the app's preview in task switchers.
								</div>
								<div class="text-muted">
									<field name="pwa_theme_color" attrs="{'required': [('website_id', '!=', False)] }" class="oe_inline" help="help"/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_start_url" string="Start URL"/>
								<div class="text-muted">
									The start URL tells the browser where your application should start when it is launched.
								</div>
								<div class="text-muted">
									<field name="pwa_start_url" attrs="{'required': [('website_id', '!=', False)] }" class="oe_inline" help="help"/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_icon" string="Application icon"/>
								<div class="text-muted">
                                    This icon is used in places like the home screen, app launcher, task switcher, splash screen, etc.
								</div>
								<div class="text-muted">
									<field name="pwa_icon" attrs="{'required': [('website_id', '!=', False)] }" widget="image" class="w-25 mt-2" help="help"/>
								</div>
							</div>
						</div>
                    </div>
                    <div class="row mt16 o_settings_container" id="website_pwa_firebase_settings">
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_server_key" string="Server Key"/>
								<div class="text-muted">
									Firebase Cloud Messaging Server Key.
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_server_key" required="1" class="oe_inline" help="Firebase Cloud Messaging Server Key."/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_api_key" string="API key"/>
								<div class="text-muted">
									Firebase Cloud Messaging API Key(apiKey).
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_api_key" required="1" class="oe_inline" help="FCM API Key(apiKey), you can find this in firebase configuration(firebaseConfig)."/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_auth_domain" string="Auth Domain"/>
								<div class="text-muted">
									Firebase Cloud Messaging Auth Domain(authDomain).
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_auth_domain" required="1" class="oe_inline" help="FCM Auth Domain(authDomain), you can find this in firebase configuration(firebaseConfig)."/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_database_url" string="Database URL"/>
								<div class="text-muted">
									Firebase Cloud Messaging Database URL(authDomain).
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_database_url" required="1" class="oe_inline" help="FCM Database URL(authDomain), you can find this in firebase configuration(firebaseConfig)."/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_project_id" string="Project ID"/>
								<div class="text-muted">
									Firebase Cloud Messaging Project ID(projectId).
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_project_id" required="1" class="oe_inline" help="FCM Project ID(projectId), you can find this in firebase configuration(firebaseConfig)."/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_app_id" string="App ID"/>
								<div class="text-muted">
									Firebase Cloud Messaging App ID(appId).
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_app_id" required="1" class="oe_inline" help="FCM App ID(appId), you can find this in firebase configuration(firebaseConfig)."/>
								</div>
							</div>
						</div>
                        <div class="col-12 col-lg-6 o_setting_box" title="title">
							<div class="o_setting_right_pane">
								<label for="pwa_firebase_sender_id" string="Messaging Sender ID"/>
								<div class="text-muted">
									Firebase Cloud Messaging Messaging Sender ID(messagingSenderId).
								</div>
								<div class="text-muted">
									<field name="pwa_firebase_sender_id" required="1" class="oe_inline" help="FCM Messaging Sender ID(messagingSenderId), you can find this in firebase configuration(firebaseConfig)."/>
								</div>
							</div>
						</div>
					
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
