<odoo>

    <record id="view_project_project_form_inherit_budget" model="ir.ui.view">
        <field name="name">project.project.form.views.inherit.budget</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_risk_management_app.risk_incident_smart_button_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_rist_incident_project']" position="after">
                <button class="oe_stat_button" name="open_budget_analysis" type="object" icon="fa-dollar"
                        string="Budget Analysis"
                        groups="account.group_account_user,gts_groups.group_budget_management_can_create,gts_groups.group_budget_management_can_view">
                </button>
                <button class="oe_stat_button" name="open_budgets" type="object" icon="fa-dollar"
                        groups="account.group_account_user,gts_groups.group_budget_management_can_create,gts_groups.group_budget_management_can_view">
                    <field string="Budget Amount" name="budget_total" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
