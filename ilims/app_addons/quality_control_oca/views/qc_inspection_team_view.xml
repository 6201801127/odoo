<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_qc_inspection_team_tree" model="ir.ui.view">
        <field name="name">qc.inspection.team.tree</field>
        <field name="model">qc.inspection.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="team_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_qc_inspection_team_form" model="ir.ui.view">
        <field name="name">qc.inspection.team.form</field>
        <field name="model">qc.inspection.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="team_ids" widget="many2many_tags" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_qc_inspection_team" model="ir.actions.act_window">
        <field name="name">Inspection Team</field>
        <field name="res_model">qc.inspection.team</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_qc_inspection_team_tree"/>
    </record>

    <menuitem name="Inspection Team"
              parent="qc_menu_test_parent"
              id="qc_inspection_team_menu"
              action="action_qc_inspection_team"
              groups="group_quality_control_manager"
              sequence="21"/>

</odoo>
