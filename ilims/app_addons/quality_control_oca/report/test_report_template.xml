<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_test_qc_inspection">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2 class="mt16">
                            <span t-field="o.name"/>
                        </h2><br/>
                        <div class="row mt32 mb32">
                            <div t-if="o.subject" class="col-auto col-3 mw-100 mb-2">
                                <strong>Quality Subject:</strong>
                                <p class="m-0" t-field="o.subject"/>
                            </div>
                            <div t-if="o.test" class="col-auto col-3 mw-100 mb-2">
                                <strong>Quality Test:</strong>
                                <p class="m-0" t-field="o.test.name"/>
                            </div>
                            <div t-if="o.project_id" class="col-auto col-3 mw-100 mb-2">
                                <strong>Project:</strong>
                                <p class="m-0" t-field="o.project_id.name"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div t-if="o.project_stage_id" class="col-auto col-3 mw-100 mb-2">
                                <strong>Project Stage:</strong>
                                <p class="m-0" t-field="o.project_stage_id.name"/>
                            </div>
                            <div t-if="o.date" class="col-auto col-3 mw-100 mb-2">
                                <strong>Date:</strong>
                                <p class="m-0" t-field="o.date"/>
                            </div>
                            <div t-if="o.user" class="col-auto col-3 mw-100 mb-2">
                                <strong>Responsible:</strong>
                                <p class="m-0" t-field="o.user.name"/>
                            </div>
                        </div><br/>
                        <h3 class="mt16">
                            <span style="color:#7C7BAD">Questions</span>
                        </h3>
                        <table class="table table-sm o_main_table">
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_question" class="text-left">Question</th>
                                    <th name="th_question_type" class="text-left">Question Type</th>
                                    <th name="th_valid_values" class="text-left">Valid Values</th>
                                    <th name="th_deadline" class="text-left">Deadline</th>
                                    <th name="th_qualitative" class="text-left">Qualitative Value</th>
                                    <th name="th_quantitative" class="text-left">Quantitative Value</th>
                                    <th name="th_weightage" class="text-left">Weightage</th>
                                    <th name="th_remarks" class="text-left">Remarks</th>
                                    <th name="th_success" class="text-left">Success?</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.inspection_lines" t-as="line">
                                    <tr>
                                        <td name="td_question" class="text-left">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td name="td_question_type" class="text-left">
                                            <span t-field="line.question_type"/>
                                        </td>
                                        <td name="td_valid_values" class="text-left">
                                            <span t-field="line.valid_values"/>
                                        </td>
                                        <td name="td_deadline" class="text-left">
                                            <span t-field="line.deadline"/>
                                        </td>
                                        <td name="td_qualitative_value" class="text-left">
                                            <span t-field="line.qualitative_value.name"/>
                                        </td>
                                        <td name="td_quantitative_value" class="text-left">
                                            <span t-field="line.quantitative_value"/>
                                        </td>
                                        <td name="td_weightage" class="text-left">
                                            <span t-field="line.weightage"/>
                                        </td>
                                        <td name="td_remarks" class="text-left">
                                            <span t-field="line.remarks"/>
                                        </td>
                                        <td name="td_success" class="text-left">
                                            <t t-if="line.success == True">
                                                <span>Pass</span>
                                            </t>
                                            <t t-else="">
                                                <span>Fail</span>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table><br/>
                        <h3 class="mt16">
                            <span style="color:#7C7BAD">Deliverables and Acceptance Criteria</span>
                        </h3>
                        <table class="table table-sm o_main_table">
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_deliverables" class="text-left">Deliverables</th>
                                    <th name="th_acceptable" class="text-left">Acceptable Criteria/Acceptable
                                        Situation
                                    </th>
                                    <th name="th_remarks" class="text-left">Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.deliverables_ids" t-as="line">
                                    <tr>
                                        <td name="td_deliverables" class="text-left">
                                            <span t-field="line.deliverables"/>
                                        </td>
                                        <td name="td_accept_criteria_situation" class="text-left">
                                            <span t-field="line.accept_criteria_situation"/>
                                        </td>
                                        <td name="td_remarks" class="text-left">
                                            <span t-field="line.remarks"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table><br/>
                        <h3 class="mt16">
                            <span style="color:#7C7BAD">Quality Assurance Activities</span>
                        </h3>
                        <table class="table table-sm o_main_table">
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_activity" class="text-left">Activity Name</th>
                                    <th name="th_resource" class="text-left">Resource</th>
                                    <th name="th_remarks" class="text-left">Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.assurance_activity_ids" t-as="line">
                                    <tr>
                                        <td name="td_activity" class="text-left">
                                            <span t-field="line.activity_name"/>
                                        </td>
                                        <td name="td_accept_criteria_situation" class="text-left">
                                            <span t-field="line.resource"/>
                                        </td>
                                        <td name="td_remarks" class="text-left">
                                            <span t-field="line.remarks"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report id="action_report_test_qc_inspection"
            model="qc.inspection"
            string="Test Report"
            report_type="qweb-pdf"
            name="quality_control_oca.report_test_qc_inspection"
            file="quality_control_oca.report_test_qc_inspection"/>

</odoo>
