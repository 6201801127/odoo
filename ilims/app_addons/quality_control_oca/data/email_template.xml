<odoo>

    <record id="quality_test_assigned_to_auditor" model="mail.template">
        <field name="name">Quality Inspection Assigned.</field>
        <field name="model_id" ref="quality_control_oca.model_qc_inspection"/>
        <field name="subject">Quality Inspection (${object.name}) Assigned.</field>
        <field name="email_from"></field>
        <field name="partner_to"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi ${object.user.name},</p><br/>
                <p>Quality Inspection (<b>${object.name}</b>) is assigned to you, please click the below link to view Quality Inspection.</p>
                <p>
                <br/>
                <a href="_inspection_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

