                % endif
                % if object.financial_bid_opening_date:
                <p>Financial Bid Opening Date: <strong>${object.financial_bid_opening_date}</strong></p>
                % endif
                <br/>
                <p>Thank You</p>
                ]]>
        </field>
    </record>

