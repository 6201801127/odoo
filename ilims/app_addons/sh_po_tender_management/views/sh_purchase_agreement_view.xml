<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_purchase_agreement_form_view" model="ir.ui.view">
        <field name="name">sh.purchase.agreement.form.view</field>
        <field name="model">purchase.agreement</field>
        <field name="arch" type="xml">
            <form string="Tender">
                <header>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"
                            attrs="{'invisible':[('state', 'not in', ['draft'])]}"/>
                    <button name="action_new_quotation"
                            string="New Quotation"
                            type="object" class="oe_highlight"
                            attrs="{'invisible':['|', ('state','not in',['confirm']), ('is_open_tender', '=', True)]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <button name="action_validate"
                            string="Validate"
                            type="object" class="oe_highlight"
                            attrs="{'invisible':[('state','not in',['confirm'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <!--<button name="action_analyze_rfq" string="Analyze RFQ" type="object" class="oe_highlight"-->
                    <!--attrs="{'invisible':[('state','not in',['financial_bid'])]}"/>-->
                    <button name="action_open_technical_bid"
                            string="Open Technical Bid"
                            type="object" class="btn btn-primary"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"
                            attrs="{'invisible':[('state','not in',['bid_selection'])]}"/>
                    <button name="action_publish_technical_bid"
                            string="Publish Technical Bid"
                            type="object" class="btn btn-primary"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"
                            attrs="{'invisible':[('state','not in',['technical_bid'])]}"/>
                    <button name="action_open_financial_bid"
                            string="Open Financial Bid"
                            class="btn btn-primary" type="object"
                            attrs="{'invisible':[('state','not in',['technical_bid_published'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <button name="action_publish_financial_bid"
                            string="Publish Financial Bid"
                            class="btn btn-primary" type="object"
                            attrs="{'invisible':[('state','not in',['financial_bid'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <button name="action_send_tender"
                            string="Sent By Email"
                            type="object"
                            attrs="{'invisible':[('state', 'in', ['draft', 'confirm', 'cancel'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <button name="action_close"
                            string="Close"
                            type="object" class="oe_highlight"
                            attrs="{'invisible':[('state','not in',['financial_bid_published'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object" class="btn btn-primary"
                            attrs="{'invisible':[('state','in',['cancel'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <button name="action_set_to_draft"
                            string="Set To Draft"
                            type="object"
                            attrs="{'invisible':[('state','not in',['cancel'])]}"
                            groups="sh_po_tender_management.sh_purchase_tender_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_quote" class="oe_stat_button" icon="fa-pencil-square-o"
                                attrs="{'invisible':[('state','in',['draft', 'confirm', 'bid_selection', 'cancel'])]}">
                            <field name="rfq_count" widget="statinfo" string="Received Quotations"/>
                        </button>
                        <button type="object" name="action_view_order" class="oe_stat_button" icon="fa-pencil-square-o"
                                attrs="{'invisible':[('state','in',['draft', 'confirm', 'bid_selection', 'cancel'])]}">
                            <field name="order_count" widget="statinfo" string="Selected Orders"/>
                        </button>
                        <button name="website_publish_button" type="object" class="oe_stat_button" icon="fa-globe"
                                groups="sh_po_tender_management.sh_purchase_tender_manager"
                                attrs="{'invisible': [('state', 'in', ['draft', 'confirm', 'cancel'])]}">
                            <field name="is_published" widget="website_publish_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                            <field name="sequence" invisible="1"/>
                            <field name="compute_custom_boolean" invisible="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="website_description" required="1" string="Tender Description *"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="project_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="sh_stakeholder_ids" widget="many2many_tags" invisible="1"/>
                            <field name="sh_purchase_user_id" domain="[('id', 'in', sh_stakeholder_ids)]"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="sh_agreement_type" widget="selection"
                                   string="Tender Type *"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="tender_method_id" widget="selection"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="sh_vender_id" invisible="1"/>
                            <field name="partner_ids"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"
                                   widget="many2many_tags"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
<!--                            <field name="sh_attachment" filename="sh_attachment_name" required="1"-->
<!--                                   string="Tender Document *"-->
<!--                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>-->
<!--                            <field name="sh_attachment_name" invisible="1"/>-->
                            <field name="is_open_tender"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                        </group>
                        <group>
                            <field name="sh_agreement_deadline" required="1"
                                   string="Tender Submission Deadline *"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="technical_bid_opening_date" required="1"
                                   string="Technical Bid Opening Date *"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="financial_bid_opening_date" required="1"
                                   string="Financial Bid Opening Date *"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="sh_order_date"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="sh_delivery_date"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="sh_source" placeholder="e.g. PO0001"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                            <field name="vendor_participated_count" readonly="1"/>
                            <field name="vendor_participated" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="tender_documents" string="Tender Documents">
                            <field name="tender_documents_ids">
                                <tree editable="bottom">
                                    <field name="sh_attachment" filename="sh_attachment_name" required="1"
                                           string="Tender Document *" widget="binary" force_save="1"
                                           attrs="{'readonly':[('parent.state','in',['closed','cancel'])]}"/>
                                    <field name="sh_attachment_name" invisible="1" force_save="1"/>
                                    <field name="sh_attachment_id" invisible="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Products" name="products">
                            <field name="sh_purchase_agreement_line_ids"
                                   attrs="{'readonly':[('state','in',['closed','cancel'])]}">
                                <form string="Purchase Tender">
                                    <group>
                                        <group>
                                            <field name="sh_product_id"/>
                                            <field name="sh_qty"/>
                                            <field name="sh_ordered_qty"/>
                                            <field name="sh_price_unit"/>
                                            <field name="company_id" groups="base.group_multi_company"
                                                   options="{'no_create': True}"/>
                                        </group>
                                    </group>
                                </form>
                                <tree editable="bottom" decoration-primary="sh_qty &gt; sh_ordered_qty"
                                      decoration-success="sh_ordered_qty &gt;= sh_qty">
                                    <field name="sh_product_id"/>
                                    <field name="sh_qty"/>
                                    <field name="sh_ordered_qty"/>
                                    <field name="sh_price_unit"/>
                                    <field name="company_id" groups="base.group_multi_company"
                                           options="{'no_create': True}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Technical Bid" name="technical_bid"
                              groups="sh_po_tender_management.sh_purchase_tender_technical_committee,sh_po_tender_management.sh_purchase_tender_manager"
                              attrs="{'invisible':[('state', 'in', ['draft', 'confirm', 'bid_selection', 'cancel'])]}">
                            <field name="technical_bid_lines"
                                   attrs="{'readonly':[('state','not in', ['technical_bid'])]}">
                                <tree create="false" editable="bottom">
                                    <field name="rfq_number" readonly="1" force_save="1" invisible="1"/>
                                    <field name="vendor_id" readonly="1" force_save="1"/>
                                    <field name="technical_document" filename="technical_document_name"
                                           readonly="1" force_save="1"/>
                                    <field name="technical_document_name" invisible="1"/>
                                    <field name="technical_marks"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="rfq_number" readonly="1" force_save="1" invisible="1"/>
                                            <field name="vendor_id" readonly="1" force_save="1"/>
                                        </group>
                                        <group>
                                            <field name="technical_document" filename="technical_document_name"
                                                   readonly="1" force_save="1"/>
                                            <field name="technical_document_name" invisible="1" force_save="1"/>
                                            <field name="technical_marks"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Financial Bid" name="financial_bid"
                              groups="sh_po_tender_management.sh_purchase_tender_financial_committee,sh_po_tender_management.sh_purchase_tender_manager"
                              attrs="{'invisible':[('state', 'not in', ['financial_bid', 'financial_bid_published', 'closed'])]}">
                            <field name="financial_bid_lines"
                                   attrs="{'readonly':[('state','not in', ['financial_bid'])]}">
                                <tree create="false" editable="bottom">
                                    <field name="rfq_number" readonly="1" force_save="1" invisible="1"/>
                                    <field name="vendor_id" readonly="1" force_save="1"/>
                                    <field name="financial_document" readonly="1" force_save="1"
                                           filename="financial_document_name"/>
                                    <field name="financial_document_name" invisible="1" force_save="1"/>
                                    <field name="financial_value" readonly="1" force_save="1"/>
                                    <field name="financial_marks"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="rfq_number" readonly="1" force_save="1" invisible="1"/>
                                            <field name="vendor_id" readonly="1" force_save="1"/>
                                            <field name="financial_document" readonly="1" force_save="1"
                                                   filename="financial_document_name"/>
                                            <field name="financial_document_name" invisible="1" force_save="1"/>
                                        </group>
                                        <group>
                                            <field name="financial_value" readonly="1" force_save="1"/>
                                            <field name="financial_marks"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <field name="sh_notes" string="Terms &amp; Conditions" class="oe_inline"
                           placeholder="Define your terms and conditions ..."
                           attrs="{'readonly':[('state','in',['closed','cancel'])]}"/>
                    <div class="oe_clear"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

