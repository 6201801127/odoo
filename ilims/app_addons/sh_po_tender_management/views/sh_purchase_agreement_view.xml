    <record id="sh_purchase_agreement_manager_readonly" model="ir.ui.view">
        <field name="name">purchase.agreement.form.readonly.manager</field>
        <field name="model">purchase.agreement</field>
        <field name="inherit_id" ref="sh_purchase_agreement_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('sh_po_tender_management.sh_purchase_tender_manager')])]"/>
        <field name="arch" type="xml">
            <field name='technical_bid_lines' position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
