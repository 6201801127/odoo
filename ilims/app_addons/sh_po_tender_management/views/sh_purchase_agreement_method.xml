<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_purchase_tender_method_form_view" model="ir.ui.view">
        <field name="name">sh.purchase.tender.method.form.view</field>
        <field name="model">purchase.agreement.method</field>
        <field name="arch" type="xml">
            <form string="Tender Method">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_purchase_tender_method_tree_view" model="ir.ui.view">
        <field name="name">sh.purchase.tender.method.tree.view</field>
        <field name="model">purchase.agreement.method</field>
        <field name="arch" type="xml">
            <tree string="Tender Method">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_purchase_agreement_method">
        <field name="name">Tender Method</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.agreement.method</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <field class="oe_view_nocontent_create">
                Create Tender Method.
            </field>
        </field>
    </record>

    <menuitem id="sh_purchase_agreement_method_menu"
              name="Tender Method"
              parent="purchase.menu_purchase_config"
              action="action_purchase_agreement_method"/>

</odoo>
