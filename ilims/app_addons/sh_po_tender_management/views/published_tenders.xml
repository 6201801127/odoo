<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="menu_open_tenders" model="website.menu">
        <field name="name">Tenders</field>
        <field name="url">/tenders</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">100</field>
    </record>

    <template id="open_tenders_list" name="Open Tenders">
        <t t-call="portal.portal_layout">
            <t t-if="not tenders">
                <p>There are no Tenders Published yet.</p>
            </t>
            <t t-if="tenders" t-call="portal.portal_table">
                <thead>
                    <tr>
                        <th>Tender #</th>
                        <th class="text-right">Description</th>
                        <th class="text-right">Tender Deadline</th>
                        <th class="text-right">Technical Bid Opening Date</th>
                        <th class="text-right">Financial Bid Opening Date</th>
                        <th class="text-right">Status</th>
                        <th></th>
                    </tr>
                </thead>
                <t t-foreach="tenders" t-as="tender">
                    <tr>
                        <td>
                            <t t-esc="tender.name"/>
                        </td>
                        <td class="text-right">
                            <t t-if="tender.website_description">
                                <span t-field="tender.website_description"/>
                            </t>
                        </td>
                        <td class="text-right">
                            <t t-if="tender.sh_agreement_deadline">
                                <span t-field="tender.sh_agreement_deadline"/>
                            </t>
                        </td>
                        <td class="text-right">
                            <t t-if="tender.technical_bid_opening_date">
                                <span t-field="tender.technical_bid_opening_date"/>
                            </t>
                        </td>
                        <td class="text-right">
                            <t t-if="tender.financial_bid_opening_date">
                                <span t-field="tender.financial_bid_opening_date"/>
                            </t>
                        </td>
                        <td class="text-right">
                            <t t-if="tender.state">
                                <span t-field="tender.state"/>
                            </t>
                        </td>
                        <td class="text-right">
                            <t t-if="tender.state in ('bid_selection') and tender.sh_agreement_deadline &gt; current_date">
                                <a t-att-href="'/my/home'">
                                    <button class="btn btn-secondary"
                                            t-att-data-id="tender.id" t-att-data-name="tender.id"
                                            t-att-data-value="tender.id">Apply
                                    </button>
                                </a>
                            </t>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

</odoo>
