<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="open_technical_wizard_from_view" model="ir.ui.view">
        <field name="name">open.technical.wizard.form.view</field>
        <field name="model">open.technical.wizard</field>
        <field name="arch" type="xml">
            <form string="Technical Bid">
                <field name="technical_bid_ids">
                    <tree create="false" editable="bottom">
                        <field name="po_number" readonly="1" force_save="1"/>
                        <field name="vendor_id" readonly="1" force_save="1"/>
                        <field name="technical_document" filename="technical_document_name" widget="binary"
                               readonly="1" force_save="1"/>
                        <field name="technical_document_name" invisible="1" force_save="1"/>
                        <field name="technical_marks" force_save="1"/>
                    </tree>
                </field>
                <footer>
                    <button string="Publish" name="publish_technical" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_technical_bid_wizard" model="ir.actions.act_window">
        <field name="name">Technical Bid</field>
        <field name="res_model">open.technical.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
