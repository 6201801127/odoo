<odoo>

    <record id="issue_created_email_to_customer" model="mail.template">
        <field name="name">Issue Creation</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Issue Created (${object.sequence_name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi ${object.partner_id.name},</p><br/>
                <p>Issue has been raised by ${user.name}, below are the details.</p><br/>
                <p><b>Issue No:</b> ${object.sequence_name}</p>
                <p><b>Name:</b> ${object.name}</p>
                <p><b>Description:</b> ${object.get_text_sanitised(object.description)}</p>
                <br/><p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="issue_created_email_assigned_to" model="mail.template">
        <field name="name">Issue Creation</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Issue Created (${object.sequence_name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Issue (<b>${object.sequence_name}</b>) has been created by ${user.name}, please click the below link to view.</p>
                <p>
                <br/>
                <a href="_issue_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="issue_updated_email_to_customer" model="mail.template">
        <field name="name">Issue Updated</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Issue Updated (${object.sequence_name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Issue (<b>${object.sequence_name}</b>) has been updated to ${object.stage_id.name} by ${user.name}.</p>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="issue_updated_email_assigned_to" model="mail.template">
        <field name="name">Issue Updated</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Issue Updated (${object.sequence_name})</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Issue (<b>${object.sequence_name}</b>) has been updated to ${object.stage_id.name} by ${user.name}, please click the below link to view.</p>
                <p>
                <br/>
                <a href="_issue_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thanks</p>
                ]]>
        </field>
    </record>

    <record id="online_sync_cron_issue_activity_reminder" model="ir.cron">
        <field name="name">Issue Activity Reminder</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="state">code</field>
        <field name="code">model.issue_activity_reminder()</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="issue_activity_email_reminder" model="mail.template">
        <field name="name">Issue Activity Reminder</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Issue Activity Reminder.</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="email_cc"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi,</p><br/>
                <p>Reminder to close the activity assigned to you for Issue (<b>${object.name}</b>).</p><br/>
                <p>Click the below link to view Issue.</p>
                <p>
                <br/>
                <a href="_task_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View</a>
                </p><br/>
                <p>Thank you.</p>
                ]]>
        </field>
    </record>

</odoo>
