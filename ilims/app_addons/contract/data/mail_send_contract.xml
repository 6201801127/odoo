<?xml version="1.0" ?>
<odoo>

    <data>
        <!--Email template -->
        <record id="email_template_send_contract" model="mail.template">
            <field name="name">Contract: Send by email</field>
            <field name="model_id" ref="contract.model_partner_contract"/>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Contract (${object.subject or 'n/a'})</field>
            <field name="body_html"
        ><![CDATA[
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello ${object.partner_id.name or ''},</p>
    <br/>
    <p>A new contract has been created with following details: </p>

    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;Contract Subject: <strong>${object.subject}</strong><br />
       &nbsp;Initiated Date: <strong>${object.initiated_date}</strong><br />
       % if object.start_date:
       &nbsp;Contract Start Date: <strong>${object.start_date or ''}</strong><br />
       % endif
       % if object.end_date:
       &nbsp;Contract End Date: <strong>${object.end_date or ''}</strong><br />
       % endif
    </p>
    <p>Please review the contract, sign and send it back to us!</p>
    <br/>
    <p>If you have any questions, do not hesitate to contact us.</p>
</div>
        ]]></field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
