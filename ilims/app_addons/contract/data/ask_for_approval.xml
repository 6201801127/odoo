    <record id="contract_approval_activity_email_reminder" model="mail.template">
        <field name="name">Approve Activity Reminder</field>
        <field name="model_id" ref="contract.model_partner_contract"/>
        <field name="subject">Approve Activity Reminder.</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
