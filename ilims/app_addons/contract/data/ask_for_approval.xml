<odoo>

    <record id="ask_for_approval_email" model="mail.template">
        <field name="name">Request for Contract Approval (${object.subject})</field>
        <field name="model_id" ref="contract.model_partner_contract"/>
        <field name="auto_delete" eval="False"/>
        <field name="subject">Request for Contract Approval (${object.subject})</field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear,</p>
                <br/>
                <p>Contract has been created with following details, Please Approve before due date <b>${object.approval_due_date}</b>.</p>
                % if object.subject:
                <p>Subject: <strong>${object.subject}</strong></p>
                % endif
                % if object.partner_id:
                <p>Customer: <strong>${object.partner_id.name}</strong></p>
                % endif
                % if object.initiated_date:
                <p>Initiated Date: <strong>${object.initiated_date}</strong></p>
                % endif
                % if object.start_date and object.end_date:
                <p>Start & End Date: <strong>${object.start_date} - ${object.end_date}</strong></p>
                % endif
                <p>
                Please click on link below to view contract.
                <br/><br/>
                <a href="_contract_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View Contract</a>
                </p><br/>

                <p>Thank You</p>
                ]]>
        </field>
    </record>

    <record id="rejected_email_template_contract" model="mail.template">
        <field name="name">Contract (${object.subject}) Rejected</field>
        <field name="model_id" ref="contract.model_partner_contract"/>
        <field name="auto_delete" eval="False"/>
        <field name="subject">Contract (${object.subject}) Rejected</field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear ${object.contract_requested_by.name},</p>
                <br/>
                <p>Your Contract (<b>${object.subject}</b>) has been Rejected by ${user.name} the following reason.</p><br/>
                <p><b>Rejected Reason: </b>${object.rejection_reason}</p><br/>
                <p>Click the below link to view Contract.</p>
                <p>
                <br/>
                <a href="_contract_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View Contract</a>
                </p><br/>

                <p>Thank You</p>
                ]]>
        </field>
    </record>

    <record id="approved_email_template_contract" model="mail.template">
        <field name="name">Contract (${object.subject}) Approved</field>
        <field name="model_id" ref="contract.model_partner_contract"/>
        <field name="auto_delete" eval="False"/>
        <field name="subject">Contract (${object.subject}) Approved</field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Dear ${object.contract_requested_by.name},</p>
                <br/>
                <p>Your Contract (<b>${object.subject}</b>) has been Approved by ${user.name}.</p><br/>
                <p>Click the below link to view Contract.</p>
                <p>
                <br/>
                <a href="_contract_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View Contract</a>
                </p><br/>

                <p>Thank You</p>
                ]]>
        </field>
    </record>


    <!--closure email template-->

    <record id="request_to_close_contract_email" model="mail.template">
        <field name="name">Request to Close Contract</field>
        <field name="model_id" ref="contract.model_partner_contract"/>
        <field name="subject">Request to Close Contract (${object.subject})</field>
        <field name="email_from"></field>
        <field name="partner_to"></field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html"><![CDATA[
                <p>Hi Team,</p><br/>
                <p>Requesting for Approval to Close the Contract (<b>${object.subject}</b>) before due date <b>${object.closure_due_date}</b> for the following reason.</p><br/>
                <p><b>Closure Reason:</b> ${object.closure_reason}</p>
                % if object.subject:
                <p><b>Contract Name:</b> ${object.subject}</p>
                % endif
                % if object.related_project:
                <p><b>Project:</b> ${object.related_project.name}</p>
                % endif
                % if object.partner_id:
                <p><b>Customer:</b> ${object.partner_id.name}</p>
                % endif
                % if object.related_project and object.related_project.user_id:
                <p><b>Project Manager:</b> ${object.related_project.user_id.name}</p>
                % endif
                % if object.start_date and object.end_date:
                <p>Start & End Date: <strong>${object.start_date} - ${object.end_date}</strong></p>
                % endif
                <br/>
                <p>Click the below link to view Contract.</p>
                <p>
                <br/>
                <a href="_contract_url" style="background-color: #9E588B; margin-top: 10px; padding: 10px;
                text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View Contract</a>
                </p><br/>
                <p>Thank you.</p>
                ]]>
        </field>
    </record>

