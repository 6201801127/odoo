<?xml version="1.0"?>
<odoo>
    <data noupdate="0">
        <!-- Scheduler for Contract expiry reminder -->
        <record id="contract_expiry_reminder_ir_cron_scheduler" model="ir.cron">
            <field name="name">Contract: Contract Expiration Reminder.</field>
            <field name="model_id" ref="contract.model_partner_contract"/>
            <field name="state">code</field>
            <field name="code">model.send_contract_reminder_email()</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="online_sync_cron_contract_approve_reminder" model="ir.cron">
            <field name="name">Contract Approval Reminder</field>
            <field name="model_id" ref="contract.model_partner_contract"/>
            <field name="state">code</field>
            <field name="code">model.contract_activity_reminder()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>
