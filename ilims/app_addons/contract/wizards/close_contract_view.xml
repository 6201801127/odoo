<odoo>

    <record id="view_close_contract_wizard_form" model="ir.ui.view">
        <field name="name">close.contract.wizard.form.view</field>
        <field name="model">close.contract.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="stakeholder_id" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <label for="reminder_days"/>
                            <div>
                                <field name="reminder_days" class="oe_inline"/>Day(s)
                            </div>
                        </group>
                        <group>
                            <field name="closure_due_date" required="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="closure_reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="button_close" string="Submit" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_close_contract_wizard_contract" model="ir.actions.act_window">
        <field name="name">Select Approver, Closure Due Date &amp; Enter Reason to Close the Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">close.contract.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_close_contract_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
