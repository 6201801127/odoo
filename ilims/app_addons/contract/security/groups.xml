<odoo>

    <record model="ir.module.category" id="module_category_contract">
        <field name="name">Contract Rights</field>
        <field name="sequence">104</field>
    </record>

    <record id="group_contract_creator" model="res.groups">
        <field name="name">Contract Creator</field>
        <field name="category_id" ref="module_category_contract"/>
    </record>

    <record id="group_contract_view" model="res.groups">
        <field name="name">Contract View</field>
        <field name="category_id" ref="module_category_contract"/>
    </record>

    <record id="group_contract_approver" model="res.groups">
        <field name="name">Contract Approver</field>
        <field name="category_id" ref="module_category_contract"/>
    </record>

    <record id="group_contract_close_approval_access" model="res.groups">
        <field name="name">Contract Close Approval Access</field>
        <field name="category_id" ref="module_category_contract"/>
    </record>

    <!--<record id="can_terminate_contract" model="res.groups">-->
        <!--<field name="name">Contract: Can Terminate Contracts</field>-->
        <!--<field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>-->
        <!--<field name="category_id" ref="module_category_contract"/>-->
    <!--</record>-->

    <!--ir rule-->

    <record id="users_contract_project_manager_rule" model="ir.rule">
        <field name="name">Contract: Project linked record visible</field>
        <field name="model_id" ref="model_partner_contract"/>
        <field name="domain_force">[
        '|',
            ('related_project.privacy_visibility', '!=', 'followers'),
            ('allowed_user_ids', 'in', user.ids),
        ]
        </field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="contract_project_office_rule" model="ir.rule">
        <field name="name">Contract: Project Office all record visible</field>
        <field name="model_id" ref="model_partner_contract"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>

</odoo>
