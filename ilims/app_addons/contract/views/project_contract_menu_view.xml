    <record id="action_partner_contract_view_draft" model="ir.actions.act_window">
        <field name="name">Draft</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.contract</field>
        <field name="view_mode">tree,kanban,form,pivot,activity</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Contract.
            </p>
        </field>
    </record>

    <record id="action_partner_contract_view_waiting_approval" model="ir.actions.act_window">
        <field name="name">Waiting for Approval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.contract</field>
        <field name="view_mode">tree,kanban,form,pivot,activity</field>
        <field name="domain">[('state', '=', 'waiting_for_approval')]</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Contract Waiting for Approval.
            </p>
        </field>
    </record>

