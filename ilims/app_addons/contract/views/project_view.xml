<odoo>

    <record id="views_project_project_contract_inherit" model="ir.ui.view">
        <field name="name">project.project.form.contract.views.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="bi_project_issue_sequence.project_view_project_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_project_issues']" position="after">
                <button class="oe_stat_button" name="open_contracts" type="object" icon="fa-list"
                        groups="contract.group_contract_creator,contract.group_contract_view,contract.group_contract_approver,contract.group_contract_close_approval_access">
                    <field string="Contracts" name="contract_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
