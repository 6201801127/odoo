<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--tree-->
    <record id="no_create_contract_tree" model="ir.ui.view">
        <field name="name">partner.contract.no.create.tree</field>
        <field name="model">partner.contract</field>
        <field name="inherit_id" ref="contract.view_partner_contract_tree"/>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="create_contract_tree_group" model="ir.ui.view">
        <field name="name">partner.contract.create.tree</field>
        <field name="model">partner.contract</field>
        <field name="inherit_id" ref="contract.view_partner_contract_tree"/>
        <field name="groups_id" eval="[(4, ref('contract.group_contract_creator'))]"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="attributes">
                <attribute name="create">true</attribute>
                <attribute name="edit">true</attribute>
                <attribute name="delete">true</attribute>
            </xpath>
        </field>
    </record>

    <!--form-->
    <record id="no_create_contract_form" model="ir.ui.view">
        <field name="name">partner.contract.no.create.form</field>
        <field name="model">partner.contract</field>
        <field name="inherit_id" ref="contract.view_partner_contract_form"/>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="/form" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="create_contract_form_group" model="ir.ui.view">
        <field name="name">partner.contract.create.form</field>
        <field name="model">partner.contract</field>
        <field name="inherit_id" ref="contract.view_partner_contract_form"/>
        <field name="groups_id" eval="[(4, ref('contract.group_contract_creator'))]"/>
        <field name="arch" type="xml">
            <xpath expr="/form" position="attributes">
                <attribute name="create">true</attribute>
                <attribute name="edit">true</attribute>
                <attribute name="delete">true</attribute>
            </xpath>
        </field>
    </record>

</odoo>
