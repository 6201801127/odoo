<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="tour_rejection_view_form" model="ir.ui.view">
            <field name="name">tour_rejection.view.form</field>
            <field name="model">tour.reject.remarks.wiz</field>
            <field name="arch" type="xml">
                <form string="">
                    <script >
                        $('textarea[name="manager_rejection_reason"]').on("input", function() {
                            $('#manager_description').show()
                            var currentLength = $(this).val().length;
                            $('textarea[name="manager_rejection_reason"]').attr('maxlength',500);
                            var textlen = 500 - $(this).val().length;
                            $('#manager_description').text(textlen + " Left");
                        });
                        
                        $('#manager_description').text() == '500 Left'?$('#manager_description').hide():$('#manager_description').show()

                        $('textarea[name="deputy_rejection_reason"]').on("input", function() {
                            $('#deputy_description').show()
                            var currentLength = $(this).val().length;
                            $('textarea[name="deputy_rejection_reason"]').attr('maxlength',500);
                            var textlen = 500 - $(this).val().length;
                            $('#deputy_description').text(textlen + " Left");
                        });
                        
                        $('#deputy_description').text() == '500 Left'?$('#deputy_description').hide():$('#deputy_description').show()

                        $('textarea[name="commissioner_rejection_reason"]').on("input", function() {
                            $('#comiissioner_description').show()
                            var currentLength = $(this).val().length;
                            $('textarea[name="commissioner_rejection_reason"]').attr('maxlength',500);
                            var textlen = 500 - $(this).val().length;
                            $('#comiissioner_description').text(textlen + " Left");
                        });
                        
                        $('#comiissioner_description').text() == '500 Left'?$('#comiissioner_description').hide():$('#comiissioner_description').show()
                    </script>
                    <sheet>
                        <group>
                            <label for="manager_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_commissioner','=',True),('boolean_checked_by_deputy_comm','=',True)], 'required':[('boolean_checked_by_manager','=',True)]}" />
                            <div>
                                <field name="manager_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_commissioner','=',True),('boolean_checked_by_deputy_comm','=',True)], 'required':[('boolean_checked_by_manager','=',True)]}" />
                                <p id="manager_description"></p>
                                <field name="word_limit" invisible="1"/>
                            </div>

                            <label for="deputy_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_commissioner','=',True),('boolean_checked_by_manager','=',True)], 'required':[('boolean_checked_by_deputy_comm','=',True)]}" />
                                <div>
                                    <field name="deputy_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_commissioner','=',True),('boolean_checked_by_manager','=',True)], 'required':[('boolean_checked_by_deputy_comm','=',True)]}" />
                                    <p id="deputy_description"></p>
                                    <!-- <field name="word_limit" invisible="1"/> -->
                                </div>
                            
                            <label for="commissioner_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_deputy_comm','=',True),('boolean_checked_by_manager','=',True)],'required':[('boolean_checked_by_commissioner','=',True)]}"/>
                                <div>
                                    <field name="commissioner_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_deputy_comm','=',True),('boolean_checked_by_manager','=',True)],'required':[('boolean_checked_by_commissioner','=',True)]}" />
                                    <p id="comiissioner_description"></p>
                                    <!-- <field name="word_limit" invisible="1"/> -->
                                </div>
                            <!-- <field name="manager_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_commissioner','=',True),('boolean_checked_by_deputy_comm','=',True)], 'required':[('boolean_checked_by_manager','=',True)]}"/>
                            <field name="deputy_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_commissioner','=',True),('boolean_checked_by_manager','=',True)], 'required':[('boolean_checked_by_deputy_comm','=',True)]}"/>
                            <field name="commissioner_rejection_reason" attrs="{'invisible':['|',('boolean_checked_by_deputy_comm','=',True),('boolean_checked_by_manager','=',True)],'required':[('boolean_checked_by_commissioner','=',True)]}"/> -->
                            <field name="boolean_checked_by_manager" invisible="1"/>
                            <field name="boolean_checked_by_deputy_comm" invisible="1"/>
                            <field name="boolean_checked_by_commissioner" invisible="1"/>

                        </group>
                        <footer>
                            <button name="action_reject_tour" string="Reject" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-primary" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tour_rejection_action" model="ir.actions.act_window">
            <field name="name">Action Name</field>
            <field name="res_model">tour.reject.remarks.wiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tour_rejection_view_form"/>
            <field name="target">new</field>
        </record>
    </data>

</odoo>
