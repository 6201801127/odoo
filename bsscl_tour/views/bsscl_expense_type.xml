<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!--*********** Expense type master form view ************** -->
        <record id="bsscl_expense_type_view_form_id" model="ir.ui.view">
            <field name="name">BSSCL: expense type view form</field>
            <field name="model">bsscl.tour.expense.type</field>
            <field name="arch" type="xml">
                <form string="Expense Type Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--************** Expense type master tree view *********** -->
        <record id="bsscl_expense_type_view_tree_id" model="ir.ui.view">
            <field name="name">BSSCL: expense type view tree</field>
            <field name="model">bsscl.tour.expense.type</field>
            <field name="arch" type="xml">
                <tree string="Expense Type Tree">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- **********************Exception Type action ******************* -->
        <record id="bsscl_expense_type_action_id" model="ir.actions.act_window">
            <field name="name">Expense Type / व्यय प्रकार</field>
            <field name="res_model">bsscl.tour.expense.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    

</odoo>
