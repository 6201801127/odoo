<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bsscl_tour_advance_view_form" model="ir.ui.view">
        <field name="name">bsscl_tour_advance.view.form</field>
        <field name="model">tour.advance</field>
        <field name="arch" type="xml">
            <form string="">
            <header>
                <field name="state" widget="statusbar"/>
                <button name="apply_advance_request" groups="bsscl_tour.bsscl_tour_user_group_id" attrs="{'invisible':[('state','!=','1')]}" string="Apply" type="object" class="btn-primary"/>
                <button name="approved_advance_request" groups="bsscl_tour.bsscl_tour_manager_group_id" string="Approved" type="object" attrs="{'invisible':[('state','!=','2')]}" class="btn-primary"/>
                <button name="advance_request_cancel" string="Cancel" type="object" attrs="{'invisible':[('state','not in',['2'])]}" class="btn-primary"/>
            </header>
                <sheet>
                    <group>
                        <group>
                            <field name="tour_id" required="1" domain="[('state','=','Applied')]"/>
                            <field name="originating_place_id"  force_save="1" readonly="1"/>
                            <field name="date_of_travel"  force_save="1" readonly="1"/>
                            <field name="return_date"  force_save="1" readonly="1"/>
                            <field name="travel_arrangement"  force_save="1" readonly="1"/>
                            <field name="purpose_of_travel"  force_save="1" readonly="1"/>
                            <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}" invisible="1"/>
                            <field name="advance_amount" required="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bsscl_tour_advance_view_tree" model="ir.ui.view">
        <field name="name">bsscl.tour.advance.view.tree</field>
        <field name="model">tour.advance</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="tour_id" />
                <field name="originating_place_id"  force_save="1" readonly="1"/>
                <field name="date_of_travel"  force_save="1" readonly="1"/>
                <field name="return_date"  force_save="1" readonly="1"/>
                <field name="travel_arrangement"  force_save="1" readonly="1"/>
                <field name="purpose_of_travel"  force_save="1" readonly="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="advance_amount" widget='monetary'/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="bsscl_tour_Advance_action_id" model="ir.actions.act_window">
        <field name="name">Tour Advance</field>
        <field name="res_model">tour.advance</field>
        <field name="domain">[('state','=','draft')]</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bsscl_tour_Advance_take_action_id" model="ir.actions.act_window">
        <field name="name">Tour Advance</field>
        <field name="res_model">tour.advance</field>
        <field name="domain">[('state','=','2')]</field>
        <field name="context">{'create':False}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bsscl_tour_Advance_status_action_id" model="ir.actions.act_window">
        <field name="name">Tour Advance</field>
        <field name="res_model">tour.advance</field>
        <field name="context">{'create':False,'edit':False}</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
