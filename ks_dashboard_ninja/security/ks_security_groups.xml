<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="ks_dashboard_ninja_security_groups">
            <field name="name">Kwantify Dashboard</field>
        </record>

        <record model="res.groups" id="ks_dashboard_ninja_group_user">
            <field name="name">User</field>
            <field name="category_id" ref="ks_dashboard_ninja.ks_dashboard_ninja_security_groups"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record model="res.groups" id="ks_dashboard_ninja_group_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="ks_dashboard_ninja.ks_dashboard_ninja_security_groups"/>
            <field name="implied_ids" eval="[(4, ref('ks_dashboard_ninja.ks_dashboard_ninja_group_user'))]"/>
			<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('ks_dashboard_ninja.ks_dashboard_ninja_group_user'))]"/>
        </record>
    </data>
</odoo>