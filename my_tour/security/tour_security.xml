<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- ******************BSSCL Tour category *******************************-->
        <record id="bsscl_tour_category_id" model="ir.module.category">
            <field name="name">Tour</field>
            <field name="description">Help to security restriction for a Tour module</field>
            <field name="sequence">1</field>
        </record>
        
        <!--*********************** BSSCL Tour groups  ************************************-->
        <record id="bsscl_tour_user_group_id" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="bsscl_tour_category_id"/>
        </record>
        <record id="bsscl_tour_manager_group_id" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="bsscl_tour_category_id"/>
        </record>
        <record id="bsscl_tour_finance_group_id" model="res.groups">
            <field name="name">Finance</field>
            <field name="category_id" ref="bsscl_tour_category_id"/>
        </record>

        <!--****************** Set Default group ****************************************  -->
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('my_tour.bsscl_tour_user_group_id'))]"/>
        </record>

        <!--************************** BSSCL tour ir rules  ***********************************************-->
        <record id="bsscl_tour_ir_rules_id" model="ir.rule">
            <field name="name">BSSCL Tour ir rules</field>
            <field name="model_id" ref="model_bsscl_tour"/>
            <field name="domain_force">['|','|',('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id', '=', user.id),('create_uid','=',user.id)]</field>
            <!-- <field name="domain_force">['|','|','|','|',('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id', '=', user.id),('employee_id.parent_id.parent_id.user_id', '=', user.id),('employee_id.parent_id.parent_id.parent_id.user_id', '=', user.id),('create_uid','=',user.id)]</field> -->
            
        </record>
    </data>
    

</odoo>
