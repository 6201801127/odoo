<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tour_travel_booking_view_form" model="ir.ui.view">
        <field name="name">tour.travel.booking.view.form</field>
        <field name="model">travel.booking</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="travel_mode" required="1"/>
                        <field name="other_travel_mode" attrs="{'invisible':[('travel_mode','!=','5')],'required':[('travel_mode','=','5')]}"/>
                        <field name="travel_from" required="1"/>
                        <field name="travel_to" required="1"/>
                        <field name="travel_cost" widget="monetary" required="1"/>
                        <field name="currency_id" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tour_travel_booking_view_tree" model="ir.ui.view">
        <field name="name">tour.travel.booking.view.tree</field>
        <field name="model">travel.booking</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="travel_mode" />
                <field name="other_travel_mode"  attrs="{'invisible':[('travel_mode','!=','5')]}"/>
                <field name="travel_from" />
                <field name="travel_to" />
                <field name="currency_id" invisible="1" />
                <field name="travel_cost" widget="monetary" sum="Total Amount"/>
            </tree>
        </field>
    </record>

    <record id="tour_travel_booking_action" model="ir.actions.act_window">
        <field name="name">Travel Booking</field>
        <field name="res_model">travel.booking</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
