<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!--******************************* Tour allowance configuration xml ******************************* -->
        <!--************* Tour allowance conf form view ************** -->
        <record id="bsscl_tour_allowance_view_form_id" model="ir.ui.view">
            <field name="name">BSSCL: Tour allowance view form</field>
            <field name="model">bsscl.tour.allowance</field>
            <field name="arch" type="xml">
                <form string="Tour Allowance Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="description" />
                                <field name="expense_ids"/>
                                    
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--************* Tour allowance conf tree view ************** -->
        <record id="bsscl_tour_allowance_view_tree_id" model="ir.ui.view">
            <field name="name">BSSCL: Tour allowance view tree</field>
            <field name="model">bsscl.tour.allowance</field>
            <field name="arch" type="xml">
                <tree string="Tour Allowance Tree">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="expense_ids"/>
                </tree>
            </field>
        </record>
        
        <!--************* Tour allowance conf Action view ************** -->
        <record id="bsscl_tour_allowance_action_id" model="ir.actions.act_window">
            <field name="name">Tour Allowance / भ्रमण भत्ता</field>
            <field name="res_model">bsscl.tour.allowance</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--********************************************** End ***************************************** -->
    </data>
    

</odoo>
