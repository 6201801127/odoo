<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data> 
        
        <record id="bsscl_tour_classification_expense_view_form_id" model="ir.ui.view">
            <field name="name">BSSCL: Tour classification expense view form</field>
            <field name="model">bsscl.tour.classification.expense</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="expense_type_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="currency_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="amount" widget="monetary"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="bsscl_tour_classification_expense_view_tree" model="ir.ui.view">
            <field name="name">BSSCL: Tour classification expense view tree</field>
            <field name="model">bsscl.tour.classification.expense</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="">
                    <field name="expense_type_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                    <field name="currency_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                    <field name="amount" widget="monetary"/>
                </tree>
            </field>
        </record>

        <record id="bsscl_tour_classification_expense_action_id" model="ir.actions.act_window">
            <field name="name">Tour classification expense / भ्रमण वर्गीकरण व्यय</field>
            <field name="res_model">bsscl.tour.classification.expense</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    

</odoo>
