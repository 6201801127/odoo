<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!--*********************************** Medical expense model ********************************************* -->
            <!-- *************** medical expense form view *************** -->
            <record id="bsscl_medical_expense_view_form_id" model="ir.ui.view">
                <field name="name">BSSCL: Medical expense view form</field>
                <field name="model">bsscl.medical.expense</field>
                <field name="arch" type="xml">
                    <form string="Medical Expense Form">
                        <sheet>
                            <group>
                                <field name="mdl_exp_master_id" required="1" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                                <field name="currency_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                                <field name="amount" widget="monetary"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!-- *************** medical expense tree view *************** -->
            <record id="bsscl_medical_expense_view_tree_id" model="ir.ui.view">
                <field name="name">BSSCL: Medical expense view tree</field>
                <field name="model">bsscl.medical.expense</field>
                <field name="arch" type="xml">
                    <tree editable="bottom" string="Medical Expense Tree">
                        <field name="mdl_exp_master_id" required="1" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="currency_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="amount" widget="monetary" sum="Total Amount"/>
                        
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <!-- <button class="btn btn-secondary o_attach" title="Attach" string="(Document Size should be 2MB)"/> -->
                        
                    </tree>
                </field>
            </record>

            <!-- *************** medical expense action *************** -->
            <record id="bsscl_medical_expense_action_id" model="ir.actions.act_window">
                <field name="name">Medical expense / चिकित्सा खर्च</field>
                <field name="res_model">bsscl.medical.expense</field>
                <field name="view_mode">tree,form</field>
            </record>
        <!--*************************** End *********************************************************-->

        <!--**************** Medical epense master *****************************-->
            <!-- *************** medical expense master form view *************** -->
            <record id="bsscl_medical_expense_master_view_form_id" model="ir.ui.view">
                <field name="name">BSSCL: Medical expense master view form</field>
                <field name="model">medical.expense.master</field>
                <field name="arch" type="xml">
                    <form duplicate="0" string="Medical Expense Master Form">
                        <sheet>
                            <group>
                                <field name="name" required="1" />
                                <field name="description" required="1"/>
                            
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!-- *************** medical expense master tree view *************** -->
            <record id="medical_expense_master_view_tree_id" model="ir.ui.view">
                <field name="name">BSSCL: Medical expense master view tree</field>
                <field name="model">medical.expense.master</field>
                <field name="arch" type="xml">
                    <tree string="Medical Expense Master Tree">
                        <field name="name" />
                        <field name="description" />
                    </tree>
                </field>
            </record>

            <!-- *************** medical expense master action *************** -->
            <record id="bsscl_medical_expense_master_action_id" model="ir.actions.act_window">
                <field name="name">Medical expense Master / चिकित्सा व्यय मास्टर</field>
                <field name="res_model">medical.expense.master</field>
                <field name="view_mode">tree,form</field>
            </record>
        </data>
    <!--******************************************** End **********************************************-->

</odoo>
