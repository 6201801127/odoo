<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bsscl_tour_settlement_view_form" model="ir.ui.view">
        <field name="name">bsscl_tour_advance.view.form</field>
        <field name="model">tour.settlement</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="apply_tour_settlement" groups="my_tour.bsscl_tour_user_group_id" attrs="{'invisible':[('state','!=','1')]}" string="Apply" type="object" class="btn-primary"/>
                    <button name="approved_tour_settlement" groups="my_tour.bsscl_tour_manager_group_id" string="Approved" type="object" attrs="{'invisible':[('state','!=','2')]}" class="btn-primary"/>
                    <button name="grant_tour_settlement" string="Grant" groups="my_tour.bsscl_tour_finance_group_id" type="object" attrs="{'invisible':[('state','!=','3')]}" class="btn-primary"/>
                    <button name="payment_done_tour_settlement" groups="my_tour.bsscl_tour_finance_group_id" string="Payment Done" type="object" attrs="{'invisible':[('state','!=','4')]}" class="btn-primary"/>
                    <button name="settlement_cancel" string="Cancel" type="object" attrs="{'invisible':[('state','not in',['2','3','4'])]}" class="btn-primary"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="tour_id" required="1" domain="[('state','=','completed')]" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                            <field name="employee_id" force_save="1" readonly="1"/>
                            <field name="originating_place_id"  force_save="1" readonly="1"/>
                            <field name="date_of_travel"  force_save="1" readonly="1"/>
                            <field name="return_date"  force_save="1" readonly="1"/>
                            <field name="travel_arrangement"  force_save="1" readonly="1"/>
                            <field name="purpose_of_travel"  force_save="1" readonly="1"/>
                            


                        </group>
                           
                    </group>
                     <group>
                            <field name="tour_details_ids"  force_save="1" readonly="1"/>
                            <field name="travel_expense_details_ids"  force_save="1" readonly="1"/>
                            <field name="medical_exp_ids"  force_save="1" readonly="1"/>
                            <field name="telephone_bill_exp_ids"  force_save="1" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            
                    </group>
                    <notebook>
                        <page name="Travel_booking" string="Travel Booking / यात्रा बुकिंग">
                            <field name="travel_booking_ids">
                                <tree string="Travel Booking">
                                    <field name="travel_mode"/>
                                    <field name="other_travel_mode"  attrs="{'invisible':[('travel_mode','!=','5')]}"/>
                                    <field name="travel_from" />
                                    <field name="travel_to" />
                                    <field name="currency_id" invisible="1" />
                                    <field name="travel_cost" widget="monetary" />
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bsscl_tour_settlement_view_tree" model="ir.ui.view">
        <field name="name">bsscl.tour.advance.view.tree</field>
        <field name="model">tour.settlement</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="tour_id" required="1"/>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="originating_place_id"/>
                <field name="date_of_travel"/>
                <field name="return_date"/>
                <field name="travel_arrangement"/>
                <field name="purpose_of_travel" />
                <field name="travel_expense_details_ids"/>
                <field name="medical_exp_ids"/>
                <field name="telephone_bill_exp_ids"/>
                <field name="tour_details_ids"/>

            </tree>
        </field>
    </record>

    <record id="bsscl_tour_settlement_action_id" model="ir.actions.act_window">
        <field name="name">Tour Settlement</field>
        <field name="res_model">tour.settlement</field>
        <field name="domain">[('state','=','draft')]</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bsscl_tour_settlement_take_action_id" model="ir.actions.act_window">
        <field name="name">Tour Settlement</field>
        <field name="res_model">tour.settlement</field>
        <field name="domain">[('state','in',['2','3','4'])]</field>
        <field name="context">{'create':False}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bsscl_tour_settlement_status_action_id" model="ir.actions.act_window">
        <field name="name">Tour Settlement</field>
        <field name="res_model">tour.settlement</field>
        <field name="context">{'create':False,'edit':False}</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
