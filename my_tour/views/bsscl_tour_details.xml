<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="bsscl_tour_details_view_form_id" model="ir.ui.view">
            <field name="name">BSSCL: Tour details view form</field>
            <field name="model">bsscl.tour.details</field>
            <field name="arch" type="xml">
                <form string="Tour Details form">
                    <sheet>
                        <group>
                            <field name="tour_type" required="1"/>
                            <field name="from_date" />
                            <field name="from_country_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="from_state_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="from_city"/>
                            <field name="to_date" />
                            <field name="number_of_days"/>
                            <field name="to_country_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="to_state_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="to_city"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="bsscl_tour_details_view_tree" model="ir.ui.view">
            <field name="name">BSSCL:Tour details view tree</field>
            <field name="model">bsscl.tour.details</field>
            <field name="arch" type="xml">
                <tree string="Tour details Tree">
                    <field name="tour_type" />
                    <field name="from_date" />
                    <field name="from_country_id" />
                    <field name="from_state_id" optional="show"/>
                    <field name="from_city" optional="show"/>
                    <field name="to_date" optional="show"/>
                    <field name="number_of_days" width="125px" optional="show"/>
                    <field name="to_country_id" optional="show"/>
                    <field name="to_state_id" optional="show"/>
                    <field name="to_city" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="bsscl_tour_details_action_id" model="ir.actions.act_window">
            <field name="name">Tour Details Master / यात्रा विवरण मास्टर</field>
            <field name="res_model">bsscl.tour.details</field>
            <field name="view_mode">tree,form</field>
            
        </record>
    
    </data>
    

</odoo>
