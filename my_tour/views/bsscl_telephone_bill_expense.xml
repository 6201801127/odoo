<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- *************************** Telephone Bill Expense xml ******************** -->
            <!--******************** Telephone Bill Expense form view ************************** -->
            <record id="bsscl_telephone_bill_exp_view_form_id" model="ir.ui.view">
                <field name="name">BSSCL:Telephone bill_expense view form</field>
                <field name="model">bsscl.telephone.expense</field>
                <field name="arch" type="xml">
                    <form string="Telephone Bill Exp Form">
                        <sheet>
                            <group>
                                <field name="tel_exp_master_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                                <field name="currency_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                                <field name="amount" widget="monetary"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!--******************** Telephone Bill Expense tree view ************************** -->
            <record id="bsscl_telephone_bill_exp_view_tree_id" model="ir.ui.view">
                <field name="name">BSSCL: Telephone bill expense view tree</field>
                <field name="model">bsscl.telephone.expense</field>
                <field name="arch" type="xml">
                    <tree editable="bottom" string="Telephone Bill Exp Tree">
                        <field name="tel_exp_master_id" required="1" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="currency_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="amount" widget="monetary" sum="Total Amount"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <!-- <button class="btn btn-secondary" attrs="{'invisible':[('attachment_checked','=',True)]}" string="(Document Size should be 2MB)"/> -->
                        <field name="attachment_checked" invisible="1"/>
                        

                    </tree>
                </field>
            </record>

            <!--******************** Telephone Bill Expense action ************************** -->
            <record id="bsscl_telephone_bill_exp_action_id" model="ir.actions.act_window">
                <field name="name">Telephone bill expense </field>
                <field name="res_model">bsscl.telephone.expense</field>
                <field name="view_mode">tree,form</field>
            
            </record>
        <!--**************************************** End *************************************** -->

        <!--************************* Telephone Bill Expense Master ********************************** -->
            <record id="bsscl_telephone_bill_exp_master_view_form_id" model="ir.ui.view">
                <field name="name">BSSCL:Telephone bill_expense master view form</field>
                <field name="model">telephone.bill.expense.master</field>
                <field name="arch" type="xml">
                    <form string="Telephone Bill Exp Master Form">
                        <sheet>
                            <group>
                                <field name="name" required="1"/>
                                <field name="description" required="1"/>
                                
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record id="bsscl_telephone_bill_exp_master_view_tree_id" model="ir.ui.view">
                <field name="name">BSSCL: Telephone bill expense master view tree</field>
                <field name="model">telephone.bill.expense.master</field>
                <field name="arch" type="xml">
                    <tree string="Telephone Bill Exp Master Tree">
                        <field name="name" />
                        <field name="description" />
                    </tree>
                </field>
            </record>

            <record id="bsscl_telephone_bill_exp_master_action_id" model="ir.actions.act_window">
                <field name="name">Telephone bill expense master / टेलीफोन बिल व्यय मास्टर</field>
                <field name="res_model">telephone.bill.expense.master</field>
                <field name="view_mode">tree,form</field>
            
            </record>
        <!--************************************** End ******************************************-->
        </data>
    

</odoo>
