<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="create_tour_email_template_id" model="mail.template">
            <field name="name">Tour E-mail</field>
            <field name="email_from">kwantify@csm.tech</field>
            <field name="subject">${(ctx['subject'])} | ${(object.state)}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']},${ctx['email_cc1']},${ctx['email_cc2']}</field>
            <field name="model_id" ref="my_tour.model_bsscl_tour"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type='html'>
                <table>
                    <thead>
                        <tr>
                            <td>
                                <p>
                                    %if object.state == 'Applied':
                                        <p>Dear <strong>${object.employee_id.name}</strong></p>
                                    %endif
                                    %if object.state == 'approved_by_manager':
                                    <p>Dear<strong> ${(ctx['manager_names'])},</strong></p>
                                    %endif
                                    %if object.state == 'approved_by_deputy':
                                        <p>Dear<strong> ${(ctx['deputy_comm_names'])},</strong></p>
                                    %endif
                                    %if object.state == 'completed':
                                        <p>Dear<strong>${(ctx['commissioner_names'])},</strong></p>
                                   
                                    %endif
                                    
                                </p>
                                <p>
                                    The Tour has been ${(object.state)}.Below are the details-
                                </p>
                                <p>Check your portal to stay updated on the status of the Tour.</p>

                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <br/><br/><p>This is a system generated mail. Please do not reply to this email.</p>

                            </td>
                        </tr>

                    </tbody>
                </table>
            </field>

        </record>
    
    
    </data>
    

</odoo>
