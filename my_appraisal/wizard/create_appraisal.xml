<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="create_appraisal_wiz_view_form" model="ir.ui.view">
            <field name="name">Create Appraisal Wizard View Form</field>
            <field name="model">create.appraisal.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="employee_ids"/>
                            <field name="abap_period" required="1" options="{'no_create':True,'no_open':True,'no_create_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button id="create_appraisal_wiz_button_id" name="create_appraisal_action_button" string="Create" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_appraisal_wiz_action_id" model="ir.actions.act_window">
            <field name="name">Appraisal Wizard</field>
            <field name="res_model">create.appraisal.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="create_appraisal_wiz_view_form"/>
        </record>
    
    </data>
    

</odoo>
