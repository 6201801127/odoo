<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record model="ir.ui.view" id="employee_kanban_views">
        <!--<field name="name">hr.employee.kanban.view</field>-->
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <field name="message_needaction_counter" position="after">
                <field name="department_id"/>
                <field name="branch_id" />
            </field>
            <xpath expr="//li[@id='last_login']" position="after">
                <li t-if="record.department_id.raw_value"><field name="department_id"/></li>
                <li t-if="record.branch_id.raw_value"><field name="branch_id" /></li>
            </xpath>
            <xpath expr="//li[4]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="employee_promotion_view">
        <field name="name">employee.promotion.view</field>
        <field name="model">employee.promotion</field>
        <field name="arch" type="xml">
            <form string="Employee Promotion">
                <group>
                    <group>
                        <field name="employee_id" options="{'no_open':True,'no_create_edit':True}" invisible="1"/>
                        <field name="mode_of_promotion" />
                        <field name="new_desg_id" options="{'no_open':True,'no_create_edit':True}"/>
                        <separator/>
                        <field name="pay_level_id" options="{'no_open':True,'no_create_edit':True}"/>
                        <field name="pay_cell_id" options="{'no_open':True,'no_create_edit':True}"/>
                        <field name="struct_id" options="{'no_open':True,'no_create_edit':True}" />
                        <separator />
                    </group>
                    <group>
                        <field name="concern_file_no" />
                        <field name="promotion_date" />
                        <separator />
                        <field name="order_no" />
                        <field name="order_date" />
                        <field name="remarks" />
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="give_promotion" type="object" class="btn-primary" confirm="Are you sure?"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>