<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_base_exception_and_approval">
        <field name="name">Approvals</field>
        <field name="description">Manage Dynamic Approvals</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_exception_rule_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_base_exception_and_approval"/>
        <field name="implied_ids" eval="[(6,0,[])]"/>
    </record>

    <record id="group_exception_rule_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_base_exception_and_approval"/>
    </record>

    <record id="approval_list_record_rule" model="ir.rule">
        <field name="name">Approval List Branch</field>
        <field name="model_id" ref="base_exception_and_approval.model_approvals_list"/>
        <field name="domain_force">['|', ('branch_id','=',False), ('branch_id','in',[g.id for g in user.branch_ids])]</field>
        <field name="global" eval="True"/>
    </record>

    <record id="groups_inherit.group_employee_type_regular" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('base_exception_and_approval.group_exception_rule_user'))]"/>
    </record>

    <record id="groups_inherit.group_employee_type_contractual_with_stpi" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('base_exception_and_approval.group_exception_rule_user'))]"/>
    </record>
</odoo>
