<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_users_preferences" model="ir.ui.view">
        <field name="name">res.users.preferences</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='image']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <button name="preference_change_password" position="attributes">
                <attribute name="class">oe_primary</attribute>
            </button>
            <xpath expr="//group[@name='preferences']" position="replace" />
            <xpath expr="//group[1]" position="replace" />
        </field>
    </record>
</odoo>
