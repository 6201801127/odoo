<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="leaves_stpi.holiday_calendar">
      
        <div class="container-fluid p-5">
            <div class="row" id="location_shift_filter">
                    <div class="col-lg-1  col-sm-3 col-4 mb-3">
                        <label class="h3 mt-2"> Location: </label>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-8">
                        <select class="form-control form-control-sm font-weight-bold" name="sel_branch_master" id="sel_branch_master" t-att-data-selected="master_data.data['default_branch']"  style="height: 32px; font-size: 1rem; border: 2px solid #108fbb;">
                            <t t-foreach="master_data.data['branches']" t-as="branch">
                                <option t-att-value="branch['id']" t-att-selected="branch['id'] == master_data.data['default_branch']"  >
                                    <p><b t-esc="branch['name']"></b></p>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="col-lg-1  col-sm-3 col-4 mb-3">
                        <label class="h3 mt-2"> Shift: </label>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-8">
                        <select class="form-control form-control-sm font-weight-bold" name="sel_shift" id="sel_shift" style="height: 32px; font-size: 1rem; border: 2px solid #108fbb;" t-att-data-selected="master_data.data['default_shift']">
                            <t t-foreach="master_data.data['shift_master']" t-as="shift_master">
                                <option t-att-value="shift_master['id']" t-att-selected="shift_master['id'] == master_data.data['default_shift']">
                                    <t t-esc="shift_master['name']"/>
                                </option>
                            </t>
                        </select>
                    </div>

                    <div class="col-sm-2 showButton">
                        <button class="btn btn-primary " id="btnSearchHoliday" >Show</button>
                    </div>
            </div>
            <div class="container-fluid">
                <div class="row desktop mt-5 align-items-center">
                    <div class="color-block fixed-holiday">  </div> <span class="font-weight-bold ml-2 mr-3 " > Gazetted Holiday </span>
                    <div class="color-block roster-weekoff ">  </div> <span class="font-weight-bold ml-2 mr-3 " > Restricted holiday </span>
                    <div class="color-block weekoff-weekend">  </div> <span class="font-weight-bold ml-2 mr-3 " > Week Off </span>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-sm-10">
                    <div id="holiday_calender"></div>
                </div>
                <div class="col-sm-2">
                    <div class="text-center holiday">
                        <p class="holiday-text">Holidays</p>
                    </div>

                    <div class="holidays">

                    </div>
                </div>
            </div>

        </div>  
                           
    </t>
</templates>