        <record model="ir.ui.menu" id="hr.menu_hr_department_tree">
            <field name="action" eval="False"/>
        </record>

        <menuitem name="Departments" id="hr_department_modified_menu_configuration" parent="hr.menu_human_resources_configuration" sequence="4" action="hr.open_module_tree_department" groups="hr.group_hr_manager"/>

    </data>
</odoo>