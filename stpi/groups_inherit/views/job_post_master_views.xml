<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_stpi_job_post_form" model="ir.ui.view">
            <field name="name">view.stpi.job.post.form</field>
            <field name="model">stpi.job.post</field>
            <field name="arch" type="xml">
                <form string="Functional Designation">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_stpi_job_post_tree" model="ir.ui.view">
            <field name="name">view.stpi.job.post.tree</field>
            <field name="model">stpi.job.post</field>
            <field name="arch" type="xml">
                <tree string="Functional Designation">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_stpi_job_post_act_window" model="ir.actions.act_window">
            <field name="name">Functional Designations</field>
            <field name="res_model">stpi.job.post</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_stpi_job_post" name="Functional Designations" 
        parent="hr.menu_human_resources_configuration" action="action_stpi_job_post_act_window" />

    </data>
</odoo>