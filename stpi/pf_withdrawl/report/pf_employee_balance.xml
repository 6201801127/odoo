<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_pf_employee_ledger" name="template_name">
        <t t-call = "web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">

                    <div class="page py-5">

                        <h5>Ledger Year :- <t t-esc="o.date_range_id.name"/></h5>
                        <h5>Employee :- <t t-esc="o.employee_id.name"/></h5>
                        <h5>Center :- <t t-esc="o.branch_id.name"/></h5>
                        <br/><br/>

                        <table class="table table-sm o_main_table table-bordered">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_month" class="text-left">Month</th>
                                    <th name="th_deposit_epf" class="text-left">Deposit(EPF)</th>
                                    <th name="th_deposit_mpf" class="text-right">Deposit(MPF)</th>
                                    <th name="th_deposit_vpf" class="text-right">Deposit(VPF)</th>
                                    <th name="th_deposit_total" class="text-right">Deposit(MPF+VPF)</th>
                                    <th name="th_withdraw" class="text-right">Withdraw(EPF)</th>
                                    <th name="th_withdraw_total" class="text-right">Withdraw(MPF+VPF)</th>
                                    <th name="th_total" class="text-right">Total(MPF)</th>
                                    <th name="th_total_total" class="text-right">Total(MPF+VPF)</th>
                                    <th name="th_total_pf" class="text-right">Total(PF)</th>                          

                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.child_rel" t-as="line">
                                    <tr>
                                        <td class="text-left">
                                            <span t-esc="line.month" />
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.deposit_employer_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.employee_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.employee_volun_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.deposit_employee_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.withdraw_employer_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.withdraw_employee_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.total_employer_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.total_employee_contribution"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.total_pf_contribution"/>
                                        </td>
                                    </tr>
                                </t>
                            
                            </tbody>
                        </table>

                    </div>

                </t>
            </t>
        </t>
    </template>




    <report
        id="action_pf_employee_balance"
        string="PF Ledger"
        model="stpi_pf_ledger_report_main"
        report_type="qweb-pdf"
        file="pf_withdrawl.report_pf_employee_ledger"
        name="pf_withdrawl.report_pf_employee_ledger"
        menu="True"
        print_report_name="'PF Ledger | %s | %s' % (object.employee_id.name,object.date_range_id.name)" />

   
</odoo>
