<odoo>


    <record id="view_lpf_ledger_report_tree" model="ir.ui.view">
        <field name="name">PF Forecasted Ledger Report</field>
        <field name="model">pf.ledger.report</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="employee_id"/>
                <field name="branch_id"/>
                <field name="ledger_for_year"/>
                <field name="month"/>
                <field name="epmloyee_contribution" sum="epmloyee_contribution"/>
                <field name="voluntary_contribution" sum="voluntary_contribution"/>
<!--                <field name="employer_contribution" sum="employer_contribution"/>-->
                <field name="interest_employee_voluntary" sum="interest_employee_voluntary"/>
                <field name="interest_employer" sum="interest_employer"/>
                <field name="total" sum="total"/>
            </tree>
        </field>
    </record>


        <record id="view_pf_ledger_report_search" model="ir.ui.view">
        <field name="name">PF Forecasted Ledger Report</field>
        <field name="model">pf.ledger.report</field>
        <field name="arch" type="xml">
           <search string="Holiday">
               <filter string="Center" name="branch_id" context="{'group_by':'branch_id'}"/>
               <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
            </search>
        </field>
    </record>
    

     <record id="action_pf_ledger_report_tree" model="ir.actions.act_window">
        <field name="name">PF Forecasted Ledger Report</field>
        <field name="res_model">pf.ledger.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,search</field>
     </record>

    <record id="stpi_pf_ledger_report_tree_view" model="ir.ui.view">
        <field name="name">PF Ledger Report</field>
        <field name="model">stpi_pf_ledger_report</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="date_range_id"/>
                <field name="employee_id"/>
                <field name="branch_id"/>
                <field name="month"/>
                <field name="deposit_employer_contribution"/>
                <field name="employee_contribution"/>
                <field name="employee_volun_contribution"/>
                <field name="deposit_employee_contribution"/>
                <field name="withdraw_employer_contribution"/>
                <field name="withdraw_employee_contribution"/>
                <field name="total_employer_contribution"/>
                <field name="total_employee_contribution"/>
                <field name="total_pf_contribution"/>
            </tree>
        </field>
    </record>

     
    <!-- model.name form view -->
    <record id="stpi_pf_ledger_report_main_form" model="ir.ui.view">
        <field name="name">PF Ledger Report</field>
        <field name="model">stpi_pf_ledger_report_main</field>
        <field name="arch" type="xml">
            <form create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group >
                            <field name="date_range_id" options='{"no_open": True}'/>
                            <field name="employee_id" options='{"no_open": True}'/>
                            <field name="branch_id" options='{"no_open": True}'/>
                            <field name="is_closed"/>
                            <field name="closed_on" attrs="{'invisible': [('is_closed', '=', False)]}"/>
                        </group>
                        
                        <field name="child_rel">
                            <tree>
                                <field name="month"/>
                                <field name="deposit_employer_contribution"/>
                                <field name="employee_contribution"/>
                                <field name="employee_volun_contribution"/>
                                <field name="deposit_employee_contribution"/>
                                <field name="withdraw_employer_contribution"/>
                                <field name="withdraw_employee_contribution"/>
                                <field name="total_employer_contribution"/>
                                <field name="total_employee_contribution"/>
                                <field name="total_pf_contribution"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_stpi_pf_ledger_report_main" model="ir.actions.act_window">
        <field name="name">PF Ledger Report</field>
        <field name="res_model">stpi_pf_ledger_report_main</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,search</field>
     </record>



</odoo>