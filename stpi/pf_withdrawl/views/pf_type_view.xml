<odoo>

    <record id="hr_pf_type_tree_view" model="ir.ui.view">
        <field name="name">pf.type.tree</field>
        <field name="model">pf.type</field>
        <field name="arch" type="xml">
            <tree string="PF Withdrawal Type">
                <field name="name"/>
                <field name="purpose"/>
                <field name="attachment_document"/>
                <field name="months"/>
                <field name="cepf_vcpf"/>
                <field name="cpf"/>
                <field name="voluntarily_contri" invisible="1"/>
                <field name="employee_contri" invisible="1"/>
                <field name="employer_contri" invisible="1"/>
                <field name="min_years"/>
            </tree>
        </field>
    </record>

    <record id="hr_pf_type_form_view" model="ir.ui.view">
        <field name="name">pf.type.form</field>
        <field name="model">pf.type</field>
        <field name="arch" type="xml">
            <form string="PF Withdrawal Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="purpose"/>
                            <field name="avail_once"/>
                        </group>
                       
                        <group>
                            <field name="voluntarily_contri" invisible="1"/>
                            <field name="employee_contri" invisible="1"/>
                            <field name="employer_contri" invisible="1"/>
                            <field name="attachment_document"/>
                            <field name="min_years"/>
                            <field name="min_age"/>
                            <field name="epf_limit"/>
                            <field name="min_limit"/>
                        </group>
                         <group name="eligibility_criteria" string="Eligibility Criteria(The Lowest of these 3 is the Eligible Amount)">
                            <field name="months"/>
                            <field name="basic_da_percentage"/>
                            <field name="cepf_vcpf"/>
                            <field name="cepf_vcpf_percentage"/>
                            <field name="cpf"/>
                            <field name="cpf_percentage"/>
                        </group>
                        <group name="group_instruction" string="Instructions">
                         <span><b>MPF: Member Provident Fund</b></span><br/>
                         <span><b>VPF: Voluntary Provident Fund</b></span><br/>
                         <span><b>EPF: Employer Provident Fund</b></span>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_hr_pf_type" model="ir.actions.act_window">
        <field name="name">PF Withdrawal Type</field>
        <field name="res_model">pf.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
     </record>

    <menuitem id ="pf_type_menuitem" 
            action="action_hr_pf_type"
            name="PF Withdrawal Type"
            sequence="2"
            parent="pf_withdrawl.pf_withdrawl_menu_configuration_menu_id"
            groups="pf_withdrawl.group_pf_withdraw_approver"
          />

</odoo>