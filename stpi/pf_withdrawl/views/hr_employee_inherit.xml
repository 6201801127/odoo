<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="employee_form_inherited_pf">
            <field name="name">hr.employee.form.pf</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uan_no']" position="after">
                    <field name="pf_number" />
                    <field name="eps_deduct"/>
                </xpath>
            </field>
        </record>
        

        <record model="ir.ui.view" id="previous_occupation_inherit">
            <field name="name">previous.occupation.inherit</field>
            <field name="model">employee.previous.occupation</field>
            <field name="inherit_id" ref="hr_applicant.view_employee_previous_occupation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref_phone']" position="after">
                    <field name="previous_pf" />
                </xpath>
            </field>
        </record>
    
    </data>
    
</odoo>