    <template id="my_application_info" name="My Application Information">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <section class="mb16">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12 text-center mb16">
                                    <h2>My Job Application Information</h2>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="container oe_website_jobs">
                    <div class="row">
                        <div class="col-lg-12">
                            <span t-esc="myapplication_info"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="my_applications" name="My Applications">
        <t t-call="website.layout">
            <style>
                .navbar-light{ display: none;}
            </style>
            <div id="wrap">
                <div class="jumbotron jumbotron-fluid jumbotron-bg py-4">
                    <div class="container-fluid container">
                        <div class="row align-items-center">
                            <h2 class="display-5 font-weight-bold mb-0">My Job Applications</h2>
                            <div class="ml-auto">
                                

                                <a t-att-href="'/logout-jobs/'" class=" btn btn-primary text-white font-weight-bold">Log Out   <i class="fa fa-sign-out" /> </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container oe_website_jobs my-5">
                    <div class="alert alert-warning mb-5" style="border: 2px solid #875a7b">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div><p class="m-0 font-weight-bold h4"><t t-esc="published_advertisement.job_id.name"/></p></div>
                            </div>
                            <div class="col-md-4 offset-md-2 text-right"> 
                                <a class="btn btn-primary text-white  font-weight-bold mr-4" t-att-href="'/jobs/apply/'+slug(published_advertisement)"> Continue To Your Application</a>
                            </div>
                            <!-- </div> -->
                        </div>
                    </div>
                    <div class="row">
                        <div t-if="not hr_applicants_submit">
                            <div class="col-lg-12"> 
                                <div class="text-center text-muted">
                                    <h4 class="text-danger">You have not submitted any job application.</h4>
                                </div>
                            </div>
                        </div>
                        <t t-foreach="hr_applicants_submit" t-as="hr_applicant" t-attf-class="media#{' mt-3' if hr_applicant_index else ''}">
                            <div class="col-md-3 item  mb-3">
                                <div class="card item-card card-block">
                                    <div class="card-body">
                                        <p class="h4 font-weight-bold" t-esc="hr_applicant.advertisement_job_id.name"/>
                                        <p t-if="hr_applicant.advertisement_branch_id.name" class="h6" t-esc="hr_applicant.advertisement_branch_id.name"/> <p class="h6 mb-0" t-if="hr_applicant.advertisement_branch_id.country_id.name">, <t t-esc="hr_applicant.advertisement_branch_id.country_id.name"/> </p>

                                        <button class="btn btn-outline-primary mt-3"> View Form </button>
                                    </div>
                                </div>
                            </div>
                            <!-- <ul class="list-unstyled" t-if="hr_applicants">
                                <li >
                                    <div class="media-body">
                                        <h3>
                                            <a t-attf-href="/jobs/myapplication/info/#{slug(hr_applicant)}">
                                                <span t-esc="hr_applicant"/>
                                            </a>
                                        </h3>
                                    </div>
                                </li>
                            </ul> -->
                        </t>
                    </div>
                </div>

                <!-- <t t-call="hr_applicant.my_draft_applications"/> -->
            </div>
        </t>
    </template>

    <template id="my_applications_styles" inherit_id="hr_applicant.my_applications">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/hr_applicant/static/src/css/style.css"/>
        </xpath>
    </template>

    <template id="my_draft_applications">
        <div class="oe_structure">
            <section class="mb16">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center mb16">
                            <h2>My Job Applications(Draft)</h2>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div class="container oe_website_jobs">
            <div class="row">
                <t t-foreach="hr_applicants_temp" t-as="hr_applicant_temp" t-attf-class="media#{' mt-3' if hr_applicant_temp_index else ''}">
                    <t t-foreach="hr_applicants" t-as="hr_applicant" t-attf-class="media#{' mt-3' if hr_applicant_index else ''}">
                            <div class="col-md-3 item">
                                <div class="card item-card card-block">
                                    <div class="card-body">
                                        <p class="h4 font-weight-bold" t-esc="hr_applicant.job_id.name"/>
                                        <p t-if="hr_applicant.branch_id" class="h6 mb-0" t-esc="hr_applicant.branch_id.name"/> <p class="h6 mb-0" t-if="hr_applicant.branch_id.country_id.name">, <t t-esc="hr_applicant.branch_id.country_id.name"/> </p>
                                    </div>
                                </div>
                            </div>
                            <!-- <ul class="list-unstyled" t-if="hr_applicants">
                                <li >
                                    <div class="media-body">
                                        <h3>
                                            <a t-attf-href="/jobs/myapplication/info/#{slug(hr_applicant)}">
                                                <span t-esc="hr_applicant"/>
                                            </a>
                                        </h3>
                                    </div>
                                </li>
                            </ul> -->
                        </t>
                </t>
