                    <div t-if="not hr_applicants_temp">
                        <div class="text-center text-muted">
                            <h4 class="text-danger">You have not submitted any job application(draft).</h4>
                        </div>
                    </div>
                   
                    <ul class="list-unstyled" t-if="hr_applicants_temp">
