<?xml version="1.0"?>
<odoo>
    <record id="change_stage_view_form" model="ir.ui.view">
        <field name="name">change.stage.view.form</field>
        <field name="model">change.stage</field>
        <field name="arch" type="xml">
            <form string="Change Stage">
                <group class="oe_title">
                    <field name="applicant_id" invisible="1" />
                    <field name="stage_id" options="{'no_create_edit': True,'no_open': True}"/>
                    <field name="stage_change_reason"/>
                </group>
                <footer>
                    <button name="action_state_change" string="Change Stage" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="change_stage_action" model="ir.actions.act_window">
        <field name="name">Change Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">change.stage</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="change_stage_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
