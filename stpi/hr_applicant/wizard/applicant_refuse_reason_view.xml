<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_applicant_refuse_reason_form">
            <field name="name">view.applicant.refuse.reason.form</field>
            <field name="model">applicant.refuse.reason</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="applicant_id" readonly="1"/>
                        <field name="reason"/>
                    </group>
                    <footer>
                        <button icon="fa-check" name="action_refuse_applicant" string="Refuse" type="object" class="oe_highlight"/>
                        <button icon="fa-times" string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>