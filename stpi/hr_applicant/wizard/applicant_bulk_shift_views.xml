<?xml version="1.0"?>
<odoo>
    <data>
        <act_window id="stpi_applicant_bulk_shift_act_window" 
        name="Change Stage" src_model="hr.applicant" 
        res_model="applicant.bulk.shift" 
        view_mode="form" target="new"
        multi="True"/>
        
        <record id="view_stpi_applicant_bulk_shift_form" model="ir.ui.view">
            <field name="name">Change Stage</field>
            <field name="model">applicant.bulk.shift</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="applicant_ids" readonly="1" options="{'no_create_edit': True, 'no_create':True, 'no_open':True}">
                            <tree>
                                <field name="partner_name" />
                                <field name="personal_email" />
                                <field name="job_id" />
                                <field name="stage_id" />
                                <!-- <field name="advertisement_id" /> -->
                                <!-- <field name="advertisement_line_id" /> -->
                            </tree>
                         </field>

                        <field name="stage_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                        <field name="stage_change_reason"/>
                    </group>
                    <footer>
                        <button name="change_applicant_stage" string="Change Stage" 
                        type="object" class="oe_highlight" />
                        Or      
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>