<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_offer_letter" model="mail.template">
            <field name="name">Offer Letter: Send by email</field>
            <field name="model_id" ref="hr_applicant.model_hr_applicant"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="email_to">${object.personal_email}</field>
            <field name="subject">${object.company_id.name} ${'Offer Letter'} (Ref ${object.job_id.name or 'n/a' })</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.name},
                        <br /><br />
                        Email template needed from STPI.
                    </p>
                </div>
            </field>
            <!-- <field name="report_template" ref="report_offer_letter"/> -->
            <!-- <field name="report_name">${(object.name or '').replace('/','_')}_Offer_Letter</field> -->
        </record>
    </data>
</odoo>
