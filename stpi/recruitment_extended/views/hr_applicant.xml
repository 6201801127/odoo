<odoo>
    <data>
        <record id="view_hr_applicant_inherited" model="ir.ui.view">
            <field name="name">hr.applicant.form.inherited</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='reference']" position="after">
                    <field name="date_of_birth"/>
                </xpath> -->
                <xpath expr="//field[@name='type_id']" position="after">
                    <field name="place_of_birth" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Achievements">
                        <group>
                            <field name="achievements" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                        </group>
                    </page>
                    <page string="Additional Informations">
                        <group>
                            <field name="nationality" options="{'no_create_edit': True,'no_open':True}" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="nationality_upload" filename="nationality_upload_filename" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="nationality_upload_filename" invisible="1"/>
                            <field name="additional_information" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="penalty_last_10_year" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="inquiry_going_on" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="criminal_case_pending" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="relative_ccs" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="relative_ccs_name" attrs="{'invisible':[('relative_ccs','!=','yes')],'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                        </group>
                    </page>
                    <page string="Applicable Fees">
                        <group>
                            <field name="applicable_fee" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="fees_amount" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="payment_details"  attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="payment_document" filename="payment_filename" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="payment_filename" invisible="1" />
                        </group>
                        <group>
                            <field name="signature" filename="signature_filename" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="signature_filename" invisible="1" />
                        </group>
                        <group>
                            <field name="other_doc" filename="other_doc_file_name" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                            <field name="other_doc_file_name" invisible="1" />
                        </group>
                    </page>

                    <page string="Contract Documents">
                        <group>
                            <field name="contract_document_ids" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}">
                                <tree editable="top" delete="false">
                                    <field name="name" />
                                    <field name="document"  filename="document_filename"/>
                                    <field name="document_filename" readonly="1" />
                                    <button name="unlink" type="object" string='Remove' confirm="Are you sure you want to Remove?" icon="fa-times-circle text-danger"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_applicant_education_inherited" model="ir.ui.view">
            <field name="name">view.applicant.education.form</field>
            <field name="model">applicant.education</field>
            <field name="inherit_id" ref="hr_applicant.view_applicant_education_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='percentage']" position="after">
                    <field name="certificate" filename="file_name"/>
                    <field name="file_name" invisible="1" />
                </xpath>
            </field>
        </record>

        <record id="view_applicant_previous_occupation_inherited" model="ir.ui.view">
            <field name="name">view.applicant.previous.occupation.form_web</field>
            <field name="model">applicant.previous.occupation</field>
            <field name="inherit_id" ref="hr_applicant.view_applicant_previous_occupation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pay_scale']" position="after">
                    <field name="document" filename="file_name"/>
                    <field name="file_name" invisible="1" />
                    <field name="job_description"/>
                </xpath>
            </field>
        </record>

        <record id="hr_applicant_resume_view_form" model="ir.ui.view">
            <field name="name">hr.applicant.view.form.inherit.web</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_applicant.hr_applicant_form_field_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dob']" position="after">
                    <field name="dob_doc" filename="dob_doc_file_name" attrs="{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}"/>
                    <field name="dob_doc_file_name" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>