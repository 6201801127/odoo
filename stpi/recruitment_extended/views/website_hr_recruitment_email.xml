<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="recruitment_email_web_template" name="Email Verification">
            <t t-call="website.layout">
                <style>
                    .navbar-light{ display:none}
                </style>
                <script src="/recruitment_extended/static/src/js/otp_validation.js"/>
                <div id="wrap" class="container">
                    <h1 class="text-center mt-2">
                    Email Verification
                    </h1>
                    <div class="row mt-3">
                        <section id="forms" class="col">
                            <form action="javascript:void(0)" autocomplete="off" method="post" id="recruitment_form" enctype="multipart/form-data">
                                <!-- <input type="hidden" name="apply_url" id="apply_url" t-att-value="'/jobs/apply/'+slug(published_advertisement)"/> -->
                                <input type="hidden" name="apply_url" id="apply_url" t-att-value="'/jobs/myapplications/'+slug(published_advertisement)" />
                                <div class="form-group row form-field o_website_form_required_custom">
                                    <div class="col-lg-3 col-md-4 text-right">
                                        <label class="col-form-label" for="u_email">Your Email</label>
                                    </div>
                                    <div class="col-lg-7 col-md-8">
                                        <input type="email" id="u_email" class="form-control o_website_form_input" name="u_email" required=""/>
                                    </div>
                                </div>
                                <div id='otp_div' class="form-group row form-field o_website_form_required_custom">
                                    <div class="col-lg-3 col-md-4 text-right">
                                        <label class="col-form-label" for="otp">OTP</label>
                                    </div>
                                    <div class="col-lg-7 col-md-8">
                                        <input type="text" disabled="disabled" id="otp" class="form-control o_website_form_input" name="otp" />
                                        <span id='otp_msg' class='text-muted'></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7 text-center">
                                        <button id="send_otp" type="button" name="send_otp" class="btn btn-success btn-md">Generate OTP</button>
                                        <button disabled="disabled" id="otp_validation" type="button" name="otp_validation" class="btn btn-primary btn-md">Submit</button>
                                        <span id="o_website_form_result"></span>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </t>
        </template>


    </data>
</odoo>