<odoo>

    <record id="website_hr_recruitment.hr_job_website_inherit" model="ir.ui.view">
        <!-- <field name="name">hr.job.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/> -->
        <field name="arch" type="xml">
            <xpath expr="//div[@name='kanban_boxes']" position="inside">
                <field name="website_url" invisible="1"/>
                <div class="o_recruitment_kanban_box o_kanban_primary_bottom bottom_block" style="padding-left:8px; text-align:right">
                    <span>
                        <a t-attf-href="#{'/jobs'}">Website Editor</a>
                    </span>
                </div>
            </xpath>
        </field>
    </record>


    <record model="ir.ui.view" id="hr_job_view_web_inherit">
        <field name="name">hr.job.form.web</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name = 'recruitment']" position="after">

                <group name="application_fees" string="Application Fees Details">
                    <field name="fees_applicable"/>
                    <field name="fees_detail_ids" attrs="{'invisible': [('fees_applicable', '=', False)]}">
                        <tree editable="top" create="1" delete="1" edit="1">
                            <field name="category_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="amount" />
                            <field name="gender" string="Gender" />
                        </tree>
                    </field>
                </group>

                <group name="Age Configuration">
                    <field name="age_required" />
                    <field name="min_age" attrs="{'invisible': [('age_required', '=', False)]}"/>
                    <field name="max_age" attrs="{'invisible': [('age_required', '=', False)]}"/>
                </group>
                
            </xpath>
        </field>
    </record>
</odoo>