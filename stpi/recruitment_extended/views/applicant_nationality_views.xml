<odoo>

    <record id="view_applicant_nationality_tree" model="ir.ui.view">
        <field name="name">view.applicant.nationality.tree</field>
        <field name="model">applicant.nationality</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_applicant_nationality_window" model="ir.actions.act_window">
        <field name="name">Applicant Nationality</field>
        <field name="res_model">applicant.nationality</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_applicant_nationality" name="Applicant Nationality" 
    parent="hr_recruitment.menu_hr_recruitment_configuration" 
    action="action_applicant_nationality_window" sequence="99"/>
    
</odoo>

