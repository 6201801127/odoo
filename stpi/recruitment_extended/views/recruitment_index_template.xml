<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="recruitment_job_index" name="Jobs">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure">
					<section class="mb16">
						<div class="container">
							<div class="row">
								<div class="col-lg-12 text-center mb16">
									<h2>
										Our Job Offers
									</h2>
									<h3 class="text-muted">
										Join us and help disrupt the enterprise market!
									</h3>
								</div>
								<div class="col-lg-12 text-center">
									<p>
										Join us, we offer you an extraordinary chance to learn, to
										develop and to be part of an exciting experience and
										team.
									</p>
								</div>
							</div>
						</div>
					</section>
				</div>
				<div class="container oe_website_jobs">
					<div class="row">
						<div class="d-none" id="jobs_grid_left">
						</div>
						<ul class="list-unstyled " t-if="published_advertisements">
							<li t-foreach="published_advertisements" t-as="advertisement" t-attf-class="media#{' mt-3' if job_index else ''} mb-2">
								<div class="media-body">
									<h3>
										<a t-attf-href="/jobs/detail/#{slug(advertisement) }">
											<span t-field="advertisement.job_id.name" />
										</a>
										<!--
										<small t-if="advertisement.job_id.no_of_recruitment &gt; 1">
										<t t-esc="advertisement.job_id.no_of_recruitment"/>
										open positions
										</small>
										-->
									</h3>
									<span t-field="advertisement.branch_id" />, <span t-field="advertisement.branch_id.country_id" />
									<!--
									<div class="text-muted">
									<i class="fa fa-clock-o" title="Publication date" role="img" aria-label="Publication date"/>
									From : <span t-field="advertisement.allowed_category_id.start_date"/>
									</div>
									-->
									<div class="text-muted">
										<i class="fa fa-clock-o" title="Publication date" role="img" aria-label="Last date" />
										<b>Start Date:</b> <span t-field="advertisement.advertisement_id.start_date" t-options='{"format": "dd/MM/yyyy"}'> </span>
									</div>
									<div class="text-muted">
										<i class="fa fa-clock-o" title="Publication date" role="img" aria-label="Last date" />
										<b>Last Date to Apply:</b> <span t-field="advertisement.advertisement_id.last_date" t-options='{"format": "dd/MM/yyyy"}'> </span>
									</div>
								</div>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</t>
	</template>

    <template id="recruitment_job_detail" name="Job Detail">
        <t t-call="website.layout">
			<style>
				.navbar-light{ display:none}
			</style>
            <t t-set="additional_title">Job Detail</t>
            <div id="wrap" class="js_hr_recruitment">
                <div class="oe_structure" id="oe_structure_website_hr_recruitment_detail_1"/>

                <!-- Breadcrumb -->
                <section class="mb16 bg-white">
                    <div class="container">
                        <div class="float-right">
							<button type="button" class="btn btn-primary btn-lg float-right mt32 mb4" data-toggle="modal" data-target="#publishedAdvertisement">
								Preview Advertisement
							</button>
                            <!-- <a role="button" t-attf-href="/jobs/apply/#{ slug(published_advertisement) }" class="btn btn-primary btn-lg float-right mt32 mb4"></a> -->
                        </div>
                        <label class="mb0 mt16"><a href="/jobs">Jobs</a></label> /
                        <h1 class="mb0 mt0" t-field="published_advertisement.job_id.name"/>
                        <h4 class="mt0" t-field="published_advertisement.branch_id"/>
                    </div>
                </section>

                <div t-field="published_advertisement.job_id.website_description"/>

                <div class="oe_structure">
                    <section class="o_job_bottom_bar mt32 mb32">
                        <div class="text-center">
                            <a role="button" t-attf-href="/jobs/apply/#{ slug(published_advertisement) }" class="btn btn-primary btn-lg">Apply Now!</a>
                        </div>
                    </section>
                </div>
            </div>

			<div class="modal fade" id="publishedAdvertisement" tabindex="-1" aria-labelledby="publishedAdvertisementLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="publishedAdvertisementLabel">Attachment</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="false">&amp;times;</span>
							</button>
						</div>
						<div class="modal-body">
							<div class="pdf">
								<object t-attf-data="/web/content/#{published_advertisement.advertisement_id.attachment_id.id}" type="application/pdf" width="100%" height="400">
									alt : <a href="pdf_file_name.pdf">PDF TITLE</a>
								</object>
							</div>
						</div>
					</div>
				</div>
			</div>
        </t>
    </template>
</odoo>
