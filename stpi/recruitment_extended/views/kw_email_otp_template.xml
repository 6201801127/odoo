<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="recruitment_email_otp_template" model="mail.template">
            <field name="name">STPI Recruitment OTP e-mail template</field>
            <field name="email_from">STPI@gmail.com</field>
            <field name="subject">OTP For Recruitment Process</field>
            <field name="email_to">${object.email | safe}</field>
            <field name="model_id" ref="recruitment_extended.model_hr_applicant_temp"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">${object.otp} is the One Time Password (OTP) for recruitment process.</p><br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">This OTP is usable only once and is valid for 10 mins.</p><br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">Please do not share the OTP with anyone for security reasons.</p><br/><br/>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>
    </data>
</odoo>