<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_payslip_form_lines_inherit">
            <field name="name">hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page/field[@name='line_ids']/tree/field[@name='amount']" position="before">
                    <field name="taxable_amount"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="tds_employee_form_inherited">
            <field name="name">hr.employee.form.tds</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="tds_applicable"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

