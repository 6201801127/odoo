<odoo>

    <record model="ir.module.category" id="module_hr_declaration_employee">
        <field name="name">HR Declaration</field>
        <field name="description">Help You For HR Declaration</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_officer_hr_declaration" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_hr_declaration_employee"/>
    </record>

    <record id="group_manager_hr_declaration" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_hr_declaration_employee"/>
        <field name="implied_ids" eval="[(4,ref('group_officer_hr_declaration'))]"/>
    </record>

    <record id="groups_inherit.group_employee_type_regular" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('tds.group_officer_hr_declaration')),(3, ref('tds.group_manager_hr_declaration'))]"/>
    </record>

    <record id="groups_inherit.group_employee_type_contractual_with_stpi" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('tds.group_officer_hr_declaration')),(3, ref('tds.group_manager_hr_declaration'))]"/>
    </record>

    <record id="hr_declaration_officer_record_rule" model="ir.rule">
        <field name="name">HR Declaration : Officer view own records only.</field>
        <field name="model_id" ref="model_hr_declaration"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('tds.group_officer_hr_declaration'))]"/>
    </record>

    <record id="hr_declaration_manager_record_rule" model="ir.rule">
        <field name="name">HR Declaration : Manager view records related to branch.</field>
        <field name="model_id" ref="model_hr_declaration"/>
        <field name="domain_force">['|', ('branch_id','=',False), ('branch_id','in',[g.id for g in user.branch_ids])]</field>
        <field name="global" eval="False"/>
        <field name="groups" eval="[(4,ref('tds.group_manager_hr_declaration'))]"/>
    </record>

