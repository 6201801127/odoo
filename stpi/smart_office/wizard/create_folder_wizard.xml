<odoo>

    <!-- ============ Form View of forward button============= -->
        <record id="createfolder_form_view" model="ir.ui.view">
            <field name="name">assignfolder.wizard.form</field>
            <field name="model">assignfolder.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                            <group>
                                <field name="folder_name" required ="1"/>
                                <field name="department_id" readonly="0" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                                <field name="division_id" domain="[('parent_id','!=',False),('parent_id','=',department_id)]" readonly="0" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                                <field name="subject" required="1" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}" domain="[('division_id','=',department_id),('sub_division_id','=',division_id)]"/>
                                <field name="date" readonly="1"/>
                                <field name="previous_reference"/>
                            </group>
                            <group>
                                <field name="tags" widget="many2many_tags" placeholder="Tags..." options="{'color_field': 'color','no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}"/>
                                <field name="old_file_number"/>
                                <field name="type" widget="many2many_tags" placeholder="Type..." options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}"/>
                                <field name="status"/>
                                <field name="later_reference"/>
                            </group>
                            <field name="description" placeholder="Description"/>
                        </group>
                    <footer>
                        <button name = "confirm_button" string = "Confirm" type = "object" class="oe_highlight"/>
                        <button name="cancel" string = "Cancel" special = "cancel"/>
                    </footer>
                </form>
            </field>
        </record>

     <!-- =============== Action View of forward button================ -->
     <record id="createfolder_wizard_action_view" model="ir.actions.act_window">
         <field name="name">Create File</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">assignfolder.wizard</field>
         <field name="view_type">form</field>
         <field name="view_mode">form</field>
         <field name="target">new</field>
    </record>

</odoo>