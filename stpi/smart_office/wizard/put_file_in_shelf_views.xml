<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_put_file_in_shelf_form" model="ir.ui.view">
            <field name="name">view.put_file_in_shelf.form</field>
            <field name="model">put_file_in_shelf</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="shelf_type" widget='radio' options="{'horizontal': true}"/>
                        <field name="remarks"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="put_file_in_shelf" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_put_file_in_shelf_window" multi="True" key2="client_action_multi" name="Move to Shelf" res_model="put_file_in_shelf" src_model="folder.master" view_mode="form" target="new" view_type="form"/>

    </data>
</odoo>
