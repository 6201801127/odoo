<odoo>
    <data>

        <record id="view_smart_office_part_file_form" model="ir.ui.view">
            <field name="name">view.smart_office.part.file.form</field>
            <field name="model">smart_office.part.file</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="folder_id" invisible="1"/>
                        <field name="remark" readonly="0"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="create_part_file" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
