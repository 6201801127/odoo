<odoo>

    <record id="form_view_file_tracker_wizard" model="ir.ui.view">
        <field name="name">File Tracker</field>
        <field name="model">file.tracker.wizard</field>
        <field name="arch" type="xml">
            <form string="File Tracker">
                <group>
                    <group>
                        <field name="file_name"/>
                        <field name="file_number"/>
                        <field name="department_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="subdivision_id" domain="[('parent_id','=',department_id),('parent_id','!=',False)]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="subject_id" domain="[('division_id','=',department_id),('sub_division_id','=',subdivision_id)]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="branch_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="action_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="employee_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="from_date" autocomplete="off"/>
                        <field name="to_date" autocomplete="off"/>
                        <!-- <field name="pending_with" widget='radio' options="{'horizontal': true}"/> -->
                        <field name="status"/>
                        <field name="pending_employee_id" attrs="{'invisible':[('status','!=','in_progress')]}" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                    </group>
                </group>
                <footer class="text-center">
                    <button name="confirm_report" string="View Report" type="object" class="btn-primary mr-2"/>
                    <button string="Cancel" class="btn-default ml-2" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="form_view_correspondence_tracker_wizard" model="ir.ui.view">
        <field name="name">Correspondence Tracker</field>
        <field name="model">correspondence.tracker.wizard</field>
        <field name="arch" type="xml">
            <form string="Correspondence">
                <group>
                    <group>
                        <field name="subject"/>
                        <field name="letter_number"/>
                        <field name="branch_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="file_attached"/>
                        <field name="file_number" attrs="{'invisible':[('file_attached','!=','yes')]}"/>
                        <field name="current_owner_id" attrs="{'invisible':[('file_attached','!=','no')]}" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="action_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="employee_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_create_edit': True}"/>
                        <field name="from_date" autocomplete="off"/>
                        <field name="to_date" autocomplete="off"/>
                    </group>
                </group>
                <footer class="text-center">
                    <button name="view_correspondence_tracker_report" string="View Report" type="object" class="btn-primary mr-2"/>
                    <button string="Cancel" class="btn-default ml-2" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="file_tracking_report_id" model="ir.ui.menu" >
        <field name="name">Reporting</field>
        <field name="sequence" eval="4" />
        <field name="action" eval="False" />
        <field name="parent_id" ref="muk_dms.main_menu_muk_dms" />
        <field name="groups_id" eval="[[6,0,[]]]"/>
    </record>

    <record id="file_report_action_wizard" model="ir.actions.act_window">
        <field name="name">File Tracking Report</field>
        <field name="res_model">file.tracker.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="menu_file_tracker_report_wizard" model="ir.ui.menu" >
        <field name="name">File Tracking Report</field>
        <field name="sequence" eval="1" />
        <field name="action" ref="file_report_action_wizard" />
        <field name="parent_id" ref="file_tracking_report_id" />
        <field name="groups_id" eval="[[6,0,[]]]"/>
    </record>

    <record id="correspondence_report_action_wizard" model="ir.actions.act_window">
        <field name="name">Correspondence Tracking Report</field>
        <field name="res_model">correspondence.tracker.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="menu_correspondence_tracker_report_wizard" model="ir.ui.menu" >
        <field name="name">Correspondence Tracking Report</field>
        <field name="sequence" eval="2" />
        <field name="action" ref="correspondence_report_action_wizard" />
        <field name="parent_id" ref="file_tracking_report_id" />
        <!-- <field name="groups_id" eval="[[6,0,[ref('base.group_no_one')]]]"/> -->
        <field name="groups_id" eval="[[6,0,[]]]"/>
        <!-- <field name="groups_id" eval="[[6,0,[]]]"/> -->
    </record>

</odoo>