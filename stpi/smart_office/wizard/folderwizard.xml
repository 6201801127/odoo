<odoo>

    <!-- ============ Form View of forward button============= -->
        <record id="folder_forward_button_form_view" model="ir.ui.view">
            <field name="name">folder.wizard.form</field>
            <field name="model">folder.wizard</field>
            <field name="arch" type="xml">
                <form string="Letter information">
                        <group>
                            <group>
                                <field name="employee" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}" required="1"/>
                            </group>
                            <group>
                                <field name="jobposition" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}" invisible="1"/>
                                <field name="job_post_id" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}"/>
                                <field name="department" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}"/>
                                 <field name="user" invisible="1"/>
                                 <field name="defid" invisible="1"/>
                            </group>
                        </group>
                    <field name="sec_own_ids" invisible="1">
                        <tree editable="bottom">
                            <field name="sec_own_id" invisible="1"/>
                            <field name="department" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}" required="1"/>
                            <field name="jobposition" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}" required="1"/>
                            <field name="employee" options="{'no_open':True,'no_create_edit': True, 'no_create': True,'no_edit':True}" required="1"/>
                            <field name="user"/>
                        </tree>
                    </field>
                    <field name="remarks" nolabel="1" required="0" invisible="1" placeholder="Remarks"/>
                     <footer>
                        <button name="confirm_button" string="Confirm" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

     <!-- =============== Action View of forward button================ -->
     <record id="folder_forward_button_wizard_action_view" model="ir.actions.act_window">
         <field name="name">Forward</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">folder.wizard</field>
         <field name="view_type">form</field>
         <field name="view_mode">form</field>
         <field name="target">new</field>
    </record>

</odoo>