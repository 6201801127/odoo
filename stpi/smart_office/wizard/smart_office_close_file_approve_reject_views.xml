<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_smart_office_close_file_approve_form" model="ir.ui.view">
            <field name="name">view.smart_office.close.file.approve.form</field>
            <field name="model">smart_office.close.file.approve</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="folder_id" invisible="1"/>
                            <field name="remark"/>
                        </group>
                        <footer>
                            <button string="Confirm" name="action_submit_file_close_approve" type="object" default_focus="1" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_smart_office_close_file_reject_form" model="ir.ui.view">
            <field name="name">view.smart_office.close.file.reject.form</field>
            <field name="model">smart_office.close.file.reject</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="folder_id" invisible="1"/>
                            <field name="remark"/>
                        </group>
                        <footer>
                            <button string="Confirm" name="action_submit_file_close_reject" type="object" default_focus="1" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
