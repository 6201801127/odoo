<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="part_file_form_view" model="ir.ui.view">
        <field name="name">part.file.wizard.form</field>
        <field name="model">part.file.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="deffolderid" invisible="1"/>
                <group string="Select Part Files">
                    <field name="folder_id" required="1" domain="[('version', '=', deffolderid),('state','=','in_progress'),('current_owner_id','=',context.get('uid'))]" nolabel="1">
                        <tree edit="true">
                            <field name="folder_name"/>
                            <field name="number"/>
                            <field name="department_id"/>
                            <field name="division_id"/>
                            <field name="subject"/>
                        </tree>
                    </field>
                </group>
                <group string="Description">
                    <field name="description" placeholder="Description" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_confirm_merge_file" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="part_file_wizard_action_view" model="ir.actions.act_window">
        <field name="name">Merge File</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">part.file.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>