<odoo>
    <data>

      <record id="pull_into_file_action_confirm_view" model="ir.ui.view">
            <field name="name">pull.into.file.custom.form</field>
            <field name="model">pull.into.file.custom</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                            <group>
                                <field name="employee" options="{'no_create_edit': True, 'no_create': True,'no_open':True,'no_edit':True}" required="1"/>
                            </group>
                            <group>
                                <!-- <field name = "jobposition" options="{'no_create_edit': True, 'no_create': True}" required="1"/> -->
                                <field name="job_post_id" options="{'no_create_edit': True, 'no_create': True,'no_open':True,'no_edit':True}" required="1"/>
                                <field name="department" options="{'no_create_edit': True, 'no_create': True,'no_open':True,'no_edit':True}" required="1"/>
                                <field name="user" invisible="1"/>
                            </group>
                        <field name="remarks" required="1"/>
                        </group>
                    <footer>
                        <button string="Confirm" name="action_bulk_transfer_files" type="object" default_focus="1" class="btn-primary"/>
                        <!-- <button string="Reject" name="pull_into_files_action_reject_button" type="object" default_focus="1" class="btn-primary"/>-->
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <act_window id="action_pull_into_files_action_confirm"
            multi="True"
            groups="muk_dms.group_dms_manager"
            key2="client_action_multi" name="Bulk Transfer"
                res_model="pull.into.file.custom" src_model="folder.master"
            view_mode="form" target="new" view_type="form"/>
    </data>
</odoo>
