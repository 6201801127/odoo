<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pull_file_from_shelf_form" model="ir.ui.view">
            <field name="name">view.pull_file_from_shelf.form</field>
            <field name="model">pull_file_from_shelf</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="remarks"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="pull_file_to_inbox" type="object" default_focus="1" class="btn-primary"/>

                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_pull_file_from_shelf_window" multi="True" key2="client_action_multi" name="Pull File from Shelf" res_model="pull_file_from_shelf" src_model="folder.master" view_mode="form" target="new" view_type="form"/>

    </data>
</odoo>
