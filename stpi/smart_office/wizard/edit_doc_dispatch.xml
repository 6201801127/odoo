<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="edit_doc_dispatch_form_view" model="ir.ui.view">
            <field name="name">edit.doc.dispatch.form</field>
            <field name="model">edit.doc.dispatch</field>
            <field name="arch" type="xml">
                <form string="Edit Document Dispatch">
                    <sheet>
                        <field name="doc_dispatch" invisible="1"/>
                        <field name="current_user_id" invisible="1"/>
                        <field name="branch_id" invisible="1"/>
                        <field name="department_id" invisible="1"/>
                        <field name="job_id" invisible="1"/>
                        <field name="created_on" invisible="1"/>
                        <field name="secondary_employee_ids" invisible="1" widget="many2many_tags"/>
                        <field name="previousversion" invisible="1"/>
                        <field name="folder_id" invisible="1"/>
                        <group>
                            <group>
                                <field name="print_heading" readonly="1"/>
                            </group>
                            <group>
                                <field name="select_template" readonly="1" options="{'no_open':True}"/>
                            </group>
                        </group>
                        
                        <field name="template_html"/>
                        <footer>
                            <button name="confirm_button" string="Confirm" type="object" class="oe_highlight"/>
                            <button name="cancel" string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="edit_doc_dispatch_button_wizard_action_view" model="ir.actions.act_window">
            <field name="name">Edit Document Dispatch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">edit.doc.dispatch</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>

</odoo>