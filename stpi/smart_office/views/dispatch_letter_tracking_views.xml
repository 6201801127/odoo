<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_dispatch_letter_tracking_form" model="ir.ui.view">
            <field name="name">view.dispatch.letter.tracking.form</field>
            <field name="model">dispatch.letter.tracking</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="action_time"/>
                            <field name="action_by_user_id" options="{'no_open':True}"/>
                            <field name="action_id" options="{'no_open':True}"/>
                            <field name="remark"/>
                        </group>
                        <group>
                            <field name="version"/>
                            <field name="new_version"/>
                            <field name="old_content"/>
                            <field name="new_content"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_dispatch_letter_tracking_tree" model="ir.ui.view">
            <field name="name">view.dispatch.letter.tracking.tree</field>
            <field name="model">dispatch.letter.tracking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="action_time"/>
                    <field name="action_by_user_id"/>
                    <field name="action_id"/>
                    <!-- <field name="new_version"/> -->
                    <field name="remark"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
