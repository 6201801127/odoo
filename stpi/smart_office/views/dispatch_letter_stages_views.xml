<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_dispatch_letter_stage_tree" model="ir.ui.view">
            <field name="name">view.dispatch.letter.stage.tree</field>
            <field name="model">dispatch.letter.stage</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="code" groups="base.group_no_one"/>
                    <field name="use_on_report" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_dispatch_letter_stage_form" model="ir.ui.view">
            <field name="name">view.dispatch.letter.stage.form</field>
            <field name="model">dispatch.letter.stage</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                                <field name="use_on_report"/>
                            </group>
                            <group/>
                        </group>
                        <p class="text-danger">
                            The code is for developer reference only, changing value of this may affect application functionality.
                        </p>
                        <field name="description" placeholder="Description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dispatch_letter_stage_search" model="ir.ui.view">
            <field name="name">view.dispatch.letter.stage.search</field>
            <field name="model">dispatch.letter.stage</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="code" />
                </search>
            </field>
        </record>

        <record id="action_dispatch_letter_stage_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tracking Stages</field>
            <field name="res_model">dispatch.letter.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_dispatch_letter_stage_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No stage found
                </p>
            </field>
        </record>

        <record id="menu_dispatch_letter_stage" model="ir.ui.menu">
            <field name="name">Tracking Stages</field>
            <field name="sequence" eval="99" />
            <field name="action" ref="action_dispatch_letter_stage_act_window" />
            <field name="parent_id" ref="menu_smart_office_dispatch_letter" />
            <field name="groups_id" eval="[[6,0,[ref('base.group_no_one')]]]"/>
        </record>
    </data>
</odoo>