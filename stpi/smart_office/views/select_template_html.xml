<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_select_template_html_tree" model="ir.ui.view">
            <field name="name">view.select.template.html.tree</field>
            <field name="model">select.template.html</field>
            <field name="arch" type="xml">
                <tree string="Templates">
                    <field name="name"/>
                    <field name="template"/>
                </tree>
            </field>
        </record>

        <record id="view_select_template_html_form" model="ir.ui.view">
            <field name="name">view.select.template.html.form</field>
            <field name="model">select.template.html</field>
            <field name="arch" type="xml">
                <form string="Templates">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="template"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_select_template_html_act_window" model="ir.actions.act_window">
            <field name="name">Templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">select.template.html</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_select_template_html" name="Templates" action="action_select_template_html_act_window" parent="menu_smart_office_dispatch_letter"/>
    </data>
</odoo>