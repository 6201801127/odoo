<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_file_pending_for_close_reopen_window" model="ir.actions.act_window">
            <field name="name">Take Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">folder.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_folder_master_take_action_tree"/>
            <field name="domain">[("state",'in',["pending_close","pending_reopen"])]</field>
            <field name="context">{"group_by":"state","action_pending_close_reopen":True,"filter_department":1,"create":False,"delete":False,"edit":False}</field>
        </record>

        <record id="action_file_pending_for_close_reopen_status_window" model="ir.actions.act_window">
            <field name="name">View Request Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">folder.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_folder_master_take_action_tree"/>
            <field name="domain">[('reopen_request_user','=',uid),("state",'in',["pending_close","pending_reopen"])]</field>
            <field name="context">{"group_by":"state","filter_department":1,"create":False,"delete":False,"edit":False}</field>
        </record>

        <menuitem id="menu_file_pending_for_close_reopen" parent="menu_folder_master_closed" groups="smart_office_file_close_approver" action="action_file_pending_for_close_reopen_window" name="Take Action" sequence="2"/>

        <menuitem id="menu_file_pending_for_close_reopen_status" parent="menu_folder_master_closed" action="action_file_pending_for_close_reopen_status_window" name="View Request Status" sequence="3"/>

    </data>
</odoo>
