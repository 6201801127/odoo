<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_smart_office_noting_tree" model="ir.ui.view">
            <field name="name">view.smart_office.noting.tree</field>
            <field name="model">smart_office.noting</field>
            <field name="arch" type="xml">
                <tree string="Notings">
                    <field name="subject"/>
                    <!-- <field name="content"/> -->
                    <field name="forward_time"/>
                    <field name="employee_id"/>
                    <field name="job_id" invisible="1"/>
                    <field name="job_post_id"/>
                    <field name="department_id"/>
                    <field name="branch_id"/>
                </tree>
            </field>
        </record>

        <record id="view_smart_office_noting_form" model="ir.ui.view">
            <field name="name">view.smart_office.noting.form</field>
            <field name="model">smart_office.noting</field>
            <field name="arch" type="xml">
                <form string="Notings">
                    <sheet>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="forward_time"/>
                            <field name="employee_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="job_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"
                                    invisible="1"/>
                            <field name="job_post_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="department_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="branch_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="secondary_employee_ids" widget="many2many_tags" readonly="1"/>
                            <field name="subject" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="content" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="comment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="forward_time"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_smart_office_comment_tree" model="ir.ui.view">
            <field name="name">view.smart_office.comment.tree</field>
            <field name="model">smart_office.comment</field>
            <field name="arch" type="xml">
                <tree string="Comments">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="create_date" widget="date"/>
                    <field name="job_id" invisible="1"/>
                    <field name="job_post_id"/>
                    <field name="department_id"/>
                    <field name="branch_id"/>
                </tree>
            </field>
        </record>

        <record id="view_smart_office_comment_form" model="ir.ui.view">
            <field name="name">view.smart_office.comment.form</field>
            <field name="model">smart_office.comment</field>
            <field name="arch" type="xml">
                <form string="Comments">
                    <sheet>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="name" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="employee_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="job_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}" invisible="1"/>
                            <field name="job_post_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="department_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="branch_id" options="{'no_open':True,'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                            <field name="forward_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>