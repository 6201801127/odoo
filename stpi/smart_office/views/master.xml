    <record id="view_smart_office_correspondence_stage_form" model="ir.ui.view">
        <field name="name">view.smart_office_correspondence_stage.form</field>
        <field name="model">smart_office.correspondence.stage</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="code" />
                        </group>
                        <group/>
                    </group>
                    <p class="text-danger">
                        The code is for developer reference only, changing value of this may affect application functionality.
                    </p>
                    <field name="description" placeholder="Description"/>
                </sheet>
            </form>
        </field>
    </record>

