<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_folder_type_tree" model="ir.ui.view">
            <field name="name">view.folder.type.tree</field>
            <field name="model">folder.type</field>
            <field name="arch" type="xml">
                <tree string="File Type">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_folder_type_form" model="ir.ui.view">
            <field name="name">view.folder.type.form</field>
            <field name="model">folder.type</field>
            <field name="arch" type="xml">
                <form string="File Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_folder_type_act_window" model="ir.actions.act_window">
            <field name="name">Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">folder.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_folder_type" name="Type" action="action_folder_type_act_window" parent="menu_smart_office_file"/>
    </data>
</odoo>