<odoo>

    <record model="ir.ui.view" id="hr_applicant_form_advertisement_inherited">
        <field name="name">hr.applicant.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
        <field name="arch" type="xml">
            <field name="job_id" position="attributes">
                <attribute name="options">{'no_open':True}</attribute>
            </field>
            <xpath expr="//field[@name='job_id']" position="before">
                <field name="advertisement_id" attrs="{'required':[('related_stage_id','!=','Joined')],'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}" options="{'no_create_edit': 1,'no_open': 1}"/>
            </xpath>
            <xpath expr="//field[@name='job_id']" position="after">
                <field name="is_second_last_stage" invisible="1" />
                <field name="advertisement_line_id" domain="[('job_id','=',job_id),('allowed_category_id','=',advertisement_id)]" attrs="{'required':[('is_second_last_stage','=',True)],'invisible':[('is_second_last_stage','=',False),('is_final_statge','=',False)],'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}" options="{'no_create_edit': True, 'no_open':True}"/>
            </xpath>
            <field name="department_id" position='attributes'>
                <attribute name="options">{'no_create_edit': 1,'no_open': 1}</attribute>
                <attribute name="attrs">{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}</attribute>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="attrs">{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}</attribute>
            </field>
            <field name="technical_resignation" position="attributes">
                <attribute name="attrs">{'readonly':['|',('related_stage_id','=','Joined'),('emp_id','!=',False)]}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.menu" id="calendar.mail_menu_calendar">
        <field name="groups_id" eval="[[3,0,[ref('base.group_no_one')]]]"/>
    </record>

</odoo>