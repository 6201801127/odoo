<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_advertisement_publish_form" model="ir.ui.view">
            <field name="name">view.advertisement.publish.form</field>
            <field name="model">advertisement.publish</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="advertisement_id" invisible="1"/>
                        <h4 class="text-warning">Below Job Positions doesn't have application fees details</h4>
                        <group>
                            <field name="job_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="name" />
                                    <field name="department_id" />
                                    <field name="sanctionedpost" />
                                </tree>
                            </field>
                        </group>
                        <h4 class="text-dark">Are you sure to publish the advertisement?</h4>
                    </sheet>
                    <footer class="justify-content-center text-center">
                        <button string="Confirm" name="action_confirm_publish_advertisement" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
