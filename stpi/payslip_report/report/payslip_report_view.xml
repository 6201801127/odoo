<odoo>

    <report 
            string="Payslip Report" 
            id="action_payslip_report_payslips" 
            model="hr.payslip" 
            report_type="qweb-pdf" 
            attachment_use="True" 
            name="payslip_report.report_make_payslips_report_template_view"
            file="payslip_report.report_make_payslips_report_template_view"
            print_report_name="'Payslip - %s' % (object.employee_id.name)" 
        />

    <report
            id="l10n_in_hr_payroll.payroll_advice"
            model="hr.payroll.advice" 
            string="Print Advice (BOI)"
            report_type="qweb-pdf"
            name="l10n_in_hr_payroll.report_payrolladvice" 
            file="l10n_in_hr_payroll.report_payrolladvice"
            print_report_name="'Payroll Payment Advice %s - %s' % (object.date.strftime('%B'),object.date.strftime('%Y'))"/>
    
    <report
            id="non_boi_payroll_advice"
            model="hr.payroll.advice" 
            string="Print Advice (Non-BOI)"
            report_type="qweb-pdf"
            name="payslip_report.report_non_boi_payrolladvice" 
            file="payslip_report.report_non_boi_payrolladvice"
            print_report_name="'Payroll Payment Advice %s - %s' % (object.date.strftime('%B'),object.date.strftime('%Y'))"/>

    <record id="paper_format_payroll_register" model="report.paperformat">
        <field name="name">Payroll Register Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>

    <report
            id="payroll_register_report"
            model="hr.payslip.run" 
            string="Payroll Register"
            report_type="qweb-pdf"
            name="payslip_report.payroll_register_report" 
            file="payslip_report.payroll_register_report"
            paperformat="payslip_report.paper_format_payroll_register"
            print_report_name="'%s Payroll Register %s - %s' % (object.branch_id.name, object.date_end.strftime('%B'), object.date_end.strftime('%Y'))"/>

</odoo>