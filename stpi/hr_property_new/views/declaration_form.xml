<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Tree view for "model" -->
        <record id="view_annual_property_declaration_tree" model="ir.ui.view">
            <field name="name">view.annual.property.declaration.tree</field>
            <field name="model">annual.property.declaration</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="property_sequence" />
                    <field name="employee_id" />
                    <field name="designation" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "model" -->
        <record id="view_annual_property_declaration_form" model="ir.ui.view">
            <field name="name">view.annual.property.declaration.form</field>
            <field name="model">annual.property.declaration</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="property_sequence" invisible="1" />
                                <field name="employee_id" readonly="1"/>
                                <field name="designation" readonly="1"/>
                                <field name="year_id" domain="[('type_id.name','=','Calendar Year')]" options="{'no_open': True, 'no_create_edit': True}" />
                            </group>
                            
                        </group>
                        <group>
                            <group>
                                <field name="property_address" /><br/>
                                <field name="housing_building" /><br/>
                                <field name="how_acquired" /><br/>
                            </group>
                            <group>
                                <field name="other_lands" /><br/>
                                <field name="present_value" /><br/>
                                <field name="state_relation" /><br/>
                                <field name="annual_income" /><br/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_annual_property_declaration_search" model="ir.ui.view">
            <field name="name">view.annual.property.declaration.search</field>
            <field name="model">annual.property.declaration</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="employee_id" />
                    <field name='designation'/>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_annual_property_declaration_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Annual Property Declaration</field>
            <field name="res_model">annual.property.declaration</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_annual_property_declaration_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to Apply Annual Property Declaration
                </p>
            </field>
        </record>
        
        <record id="seq_property_declaration" model="ir.sequence">
            <field name="name">Property Declaration Sequence</field>
            <field name="code">annual.property.declaration</field>
            <field name="padding">3</field>
        </record>
        <menuitem id="annual_property_declaration_menu" parent="hr_property_menu" action="action_annual_property_declaration_act_window" name="Property Declaration" />
    </data>
</odoo>
