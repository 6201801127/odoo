<?xml version="1.0" encoding="UTF-8"?>

<odoo>
<data>

<!--    Tree View-->
    <record id="hr_property_tree_view" model="ir.ui.view">
        <field name="name">hr.property.tree</field>
        <field name="model">hr.property.new</field>
        <field name="arch" type="xml">
            <tree string="HR Property">
                <field name="immov_sequence" />
                <field name="employee_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_property_form_view" model="ir.ui.view">
        <field name="name">hr.property.form</field>
        <field name="model">hr.property.new</field>
        <field name="arch" type="xml">
            <form string="FORM-I">

                <header>
                    <button name="button_to_approve" string="Send for Approval" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_reset_to_draft" string="Cancel" type="object" states="submitted"/>
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="submitted" groups="hr_property_new.group_hr_property_new_manager"/>
                    <button name="button_reject" string="Reject" type="object"  states="submitted"  groups="hr_property_new.group_hr_property_new_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" />
                </header>

                <sheet>
<!--                    <group>-->
                        <group>
                        <field name="immov_sequence"  invisible="1"/>
                        <field name="employee_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="designation" required="1" readonly="1" options="{'no_open': True}"/>
<!--                        <field name="service_belo"/>-->
                        <field name="employee_no" readonly="1"/>
                        <field name="scale_pay" readonly="1"/>
                        <br/>
                        <field name="purpose"/>
                        <field name="intimation_type" />
                        <field name="propert_ad"/>
                        <field name="select_id" attrs="{'invisible': [('propert_ad','!=','disposed')]}" options="{'no_open': True}"/>
                        <field name="probable_date"/>

                        <field name="mode_of_acquisition" attrs="{'invisible': [('propert_ad','!=','acquired')]}"/>
                        </group>

                        <group class="custom_string" string="In case of acquistion, source or sources from which financed/propsed to be financed" attrs="{'invisible': [('propert_ad','!=','acquired')]}">
                            <field name="finance_id" nolabel="1" >
                                <tree editable="top">
                                    <field name="property_id" invisible="1"/>
                                    <field name="mode_of_finance" />
                                    <field name="description" />
                                    <field name="amount" sum="total_finance_amount"/>
                                    <field name="document_filename" invisible="1" widget="binary"/>
                                    <field name="finance_attachment" filename="document_filename"/>
                                </tree>
                            </field>
                        </group>
                            <!-- <br attrs="{'invisible': [('propert_ad','!=','acquired')]}"/> -->
                        <group>
                            <field name="mode_of_disposal" attrs="{'invisible': [('propert_ad','!=','disposed')]}"/>
                            <field name="copy_attached" attrs="{'invisible': [('propert_ad','!=','disposed')]}"/>
                            <field name="disposed_attachment" attrs="{'invisible': [('copy_attached','!=','yes')]}" filename="disposed_attachment_name"/>
                            <field name="disposed_attachment_name" invisible="1" />
                            <br attrs="{'invisible': [('propert_ad','!=','disposed')]}"/>

                            <field name="acquistion_gift"/>
                            <field name="party_name" attrs="{'invisible': [('acquistion_gift','!=','yes')]}"/>
                            <br/>
                            <field name="rel_fact"/>
                        </group>
<!--                    </group>-->
                    <notebook>
                        <page string = "Description of Property">
                                <group>
                                    <field name="address_details"/>
                                    <br/>
                                    <field name="des_property"/>
                                    <br/>
                                    <field name="free_leas_hold"/>
                                    <br/>
                                    <field name="full_part"/>
                                    <br/>
                                    <field name="owner_property"/>
                                    <br/>
                                    <field name="property_price"/>
                                </group>
                        </page>

                        <page string="Details of the Parties with whom transaction is proposed to be made">
                                <group>
                                    <field name="party_details"/>
                                    <br/>
                                    <field name="party_relation"/>
                                    <field name="state_relationship" attrs="{'invisible': [('party_relation','!=','yes')]}"/>
                                    <br/>
                                    <field name="dealings"/>
                                    <field name="nature_of_dealings" attrs="{'invisible': [('dealings','!=','yes')]}"/>
                                    <br/>
                                    <field name="transaction"/>
                                </group>
                        </page>
                    </notebook>

                    <group string="Declaration" attrs="{'invisible':[('acquistion_gift','!=','yes')]}">
                        <h6>  I <field name="employee_id" nolabel="1" readonly="1" options="{'no_open': True}"/> hereby declare that the particulars given above are true. I request that I may be given permission to acquire/ dispose of property as described above form/to the party whose name is mentioned in item 11 above.</h6>
                    </group>
                    <group string="Declaration" attrs="{'invisible':[('acquistion_gift','!=','no')]}">
                        <h6>  I <field name="employee_id" nolabel="1" readonly="1" options="{'no_open': True}"/> hereby intimate the proposed acquisition/disposal of property by me as detailed above.I declare that the particulars given are true. </h6>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="form_menu_action" model="ir.actions.act_window">

        <field name="name">Immovable Property</field>
        <field name="res_model">hr.property.new</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Please Fill the Immovable Property Form</p>
        </field>
    </record>

    <record id="seq_immov_property" model="ir.sequence">
        <field name="name">Immovable Property Sequence</field>
        <field name="code">hr.property.new</field>
        <field name="padding">3</field>
    </record>

    <menuitem id="hr_property_menu"
          name="HR Property"
          web_icon="hr_property_new,static/description/icon.png" sequence="18"/>
    <menuitem id="hr_property_form_menu" parent="hr_property_menu" name="Immovable Property"
    action="form_menu_action"/>

    <template id="hr_property_assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/hr_property_new/static/src/style.css" />
        </xpath>
    </template>

    <record id="immovable_property_finance_form_view" model="ir.ui.view">
        <field name="name">immovable.property.finance.form</field>
        <field name="model">hr.property.finance</field>
        <field name="arch" type="xml">
            <form string="Immovable Property Finance">
                <sheet>
                    <group>
                        <field name="property_id" invisible="1"/>
                        <field name="mode_of_finance" />
                        <field name="description" />
                        <field name="amount" sum="total_finance_amount"/>
                        <field name="document_filename" invisible="1" widget="binary"/>
                        <field name="finance_attachment" filename="document_filename"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="immovable_property_finance_menu_action" model="ir.actions.act_window">
        <field name="name">Immovable Property Finance</field>
        <field name="res_model">hr.property.finance</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
</data>
</odoo>