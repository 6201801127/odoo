<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_hr_property_new_employee">
            <field name="name">HR Property</field>
            <field name="description">Help You For HR Property</field>
            <field name="sequence">21</field>
        </record>

        <record id="group_hr_property_new_officer" model="res.groups">
            <field name="name">Officer</field>
            <!-- <field name="stpi">1</field> -->
            <field name="category_id" ref="module_hr_property_new_employee"/>
        </record>

        <record id="group_hr_property_new_manager" model="res.groups">
            <field name="name">Manager</field>
            <!-- <field name="stpi">1</field> -->
            <field name="category_id" ref="module_hr_property_new_employee"/>
        </record>

        <record id="hr_property_new_officer_record_rule" model="ir.rule">
            <field name="name">Form-I : Officer own records only.</field>
            <field name="model_id" ref="hr_property_new.model_hr_property_new"/>
            <field name="domain_force">[('employee_id.user_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_property_new.group_hr_property_new_officer'))]"/>
        </record>

        <record id="hr_employee_property_officer_record_rule" model="ir.rule">
            <field name="name">Form-II : Officer own records only</field>
            <field name="model_id" ref="hr_property_new.model_hr_employee_property"/>
            <field name="domain_force">[('employee_id.user_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_property_new.group_hr_property_new_officer'))]"/>
        </record>

        <record id="hr_property_new_manager_record_rule" model="ir.rule">
            <field name="name">Form-I : manager own records only.</field>
            <field name="model_id" ref="hr_property_new.model_hr_property_new"/>
            <field name="domain_force">['|', ('employee_id.branch_id','=',False), ('employee_id.branch_id','in',[g.id for g in user.branch_ids])]</field>
            <field name="groups" eval="[(4, ref('hr_property_new.group_hr_property_new_manager'))]"/>
        </record>

        <record id="hr_employee_property_manager_record_rule" model="ir.rule">
            <field name="name">Form-II : manager own records only</field>
            <field name="model_id" ref="hr_property_new.model_hr_employee_property"/>
            <field name="domain_force">['|', ('employee_id.branch_id','=',False), ('employee_id.branch_id','in',[g.id for g in user.branch_ids])]</field>
            <field name="groups" eval="[(4, ref('hr_property_new.group_hr_property_new_manager'))]"/>
        </record>

        <record id="groups_inherit.group_employee_type_regular" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('hr_property_new.group_hr_property_new_officer'))]"/>
        </record>
    </data>
</odoo>