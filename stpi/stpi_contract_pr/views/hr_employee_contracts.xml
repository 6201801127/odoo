<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_contracts_form_inherited">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="delete">0</attribute>
                    <attribute name="duplicate">0</attribute>
                </xpath>
                <field name="employee_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True, 'no_open': True}</attribute>
                </field>

                <field name="department_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True, 'no_open': True}</attribute>
                </field>

                <field name="job_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True, 'no_open': True}</attribute>
                </field>

                <field name="company_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True, 'no_open': True}</attribute>
                </field>

                <field name='struct_id' position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True, 'no_open': True}</attribute>
                </field>
                <field name='resource_calendar_id' position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="required">0</attribute>
                </field>

                <xpath expr="//field[@name='resource_calendar_id']" position="after">
                    <field name = 'employee_type' readonly = 'True'/>
                    <field name = 'recruitment_type' attrs="{'invisible': [('employee_type', '!=', 'regular')], 'readonly': [('employee_type', '=', 'regular')]}"/>
                </xpath>

                <xpath expr="//field[@name='reported_to_secretariat']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='struct_id']" position="after">
                    <field name = 'pay_level_id' attrs="{'invisible': [('employee_type', '!=', 'regular')], 'required': [('employee_type', '=', 'regular')]}" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    <field name = 'pay_level' attrs="{'invisible': [('employee_type', '!=', 'regular')], 'required': [('employee_type', '=', 'regular')]}" domain="[('entry_pay_id', '=', pay_level_id)]" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    <field name = 'city_id' readonly="1" force_save="True"/>
                    <field name = 'employee_hra_cat' readonly="1" force_save="True"/>
                    <field name = 'city_tier' readonly="1" force_save="True"/>
                </xpath>

                <xpath expr="//group[@name='salary_and_advantages']" position="attributes">
                    <attribute name="string"></attribute>
                </xpath>

                <xpath expr="//group[@name='salary_and_advantages']" position="after">
                    <group name = 'Basic Details' attrs="{'invisible': [('employee_type', '!=', 'regular')]}">
                        <field name = 'transport_deduction'/>
                        <field name = 'pf_deduction' invisible="1"/>
                        <field name = 'basicinc' invisible="1"/>
                        <field name = 'da'/>
                        <field name = 'updated_basic'/>
                        <field name = 'supplementary_allowance'/>
                        <field name = 'check_vpf_manager' invisible="1"/>
                        <field name = 'voluntary_provident_fund' attrs="{'readonly': [('check_vpf_manager', '=', False)]}"/>
                        <field name = 'xnohra'/>
                        <field name="misc_deduction"/>
                        <field name="license_dee"/>
                        <field name="tds_amount"/>
                        <field name="arrear_amount"/>
                    </group>
                </xpath>

                <!--#Added by Sangita -->
                <label for="wage" position="attributes">
                    <attribute name="string">Basic/Consolidated</attribute>
                </label>
                <field name="type_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <field name="schedule_pay" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <xpath expr = "//div[@name='wage']" position="after">
                    <span class="text-danger">
                        Donâ€™t enter any value other than basic/contract in case of contract employee
                    </span>
                    <field name="effective_from_date" required="1"/>
                </xpath>

                <xpath expr="//group[@name='main_info']" position="after">
                    <group string="Change Logs">
                        <field name="change_log_ids" readonly="1" nolabel="1"/>
                    </group>
                </xpath>


            </field>
        </record>

        <record model="ir.ui.view" id="hr_employee_contracts_form_hra_hide">
            <field name="name">hr.contract.form.hra</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_in_hr_payroll.hr_contract_form_in_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='right_column']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='left_column']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

