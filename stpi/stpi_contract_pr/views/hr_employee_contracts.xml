        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.employee</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr']" position="inside">
                    <h2>DA Percent</h2>
                    <div class="row mt16 o_settings_container" id="update_basic_da_percent">
                        <div class="col-12 col-lg-6 o_setting_box" title="DA Percent">
                            <div class="o_setting_right_pane">
                                <label for="da_percent"/>
                                <div class="text-muted">
                                    Please set DA increment.
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="da_percent"/>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box" title="Basic Percent" invisible="1">
                            <div class="o_setting_right_pane">
                                <label for="basic_percent"/>
                                <div class="text-muted">
                                    Please set Basic(%) increment.
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="basic_percent"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" title="DA Percent">
                            <div class="o_setting_right_pane">
                                <label for="da_effective_date"/>
                                <div class="text-muted">
                                    Please set DA effective date.
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="da_effective_date"/>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box" title="DA Percent" invisible='1'>
                            <div class="o_setting_right_pane">
                                <label for="basic_effective_date"/>
                                <div class="text-muted">
                                    Please set basic effective date.
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="basic_effective_date"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        
        <record id="action_mass_update_da" model="ir.actions.server">
            <field name="name">Update DA</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="binding_model_id" ref="hr_contract.model_hr_contract"/>
            <field name="state">code</field>
            <field name="code">records.action_mass_update_da()</field>
        </record>
        
        <record id="action_mass_update_basic" model="ir.actions.server">
            <field name="name">Update BASIC</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="binding_model_id" ref="hr_contract.model_hr_contract"/>
            <field name="state">code</field>
            <field name="code">records.action_mass_update_basic()</field>
        </record>
        
        <record model="ir.ui.view" id="hr_contract_stages_inherit_search_view">
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
                    <filter name="jan_jun_join_contract" string="Jan Jun Join" domain="[('employee_id.date_join_month', '&lt;=', 6)]"/>
                    <filter name="jul_dec_join_contract" string="Jul Dec Join" domain="[('employee_id.date_join_month', '&gt;', 6),
                                                                                        ('employee_id.date_join_month', '&lt;=', 12)]"/>
                </xpath>
            </field>
        </record>
        
        <record id="hr_contract.action_hr_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">hr.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="domain">[('employee_id', '!=', False)]</field>
            <field name="context">{'branch_domain':1,'search_default_current':1, 'search_default_group_by_state': 1}</field>
            <field name="search_view_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new contract
            </p>
            </field>
        </record>
        
        <record id="hr_contract.act_hr_employee_2_hr_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">hr.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'branch_domain':1,
                'search_default_employee_id': [active_id],
                'default_employee_id': active_id,
                'search_default_group_by_state': 1
            }</field>
        </record>

        <record model="ir.ui.view" id="hr_employee_bank_account_form_view">
            <field name="name">bank.account.form</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="acc_number"/>
                                <field name="acc_holder_name"/>
                                <field name="acc_type" invisible='1'/>
                                <field name="company_id" invisible='1'/>
                                <field name="partner_id" invisible='1'/>
                            </group>
                            <group>
                                <field name="bank_id" options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>
                                <field name="currency_id" options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        <record id="hr_hr_employee_view_form_bank_account" model="ir.ui.view">
            <field name="name">view_hr_employee_contract_inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
            <field name="arch" type="xml">
                <form>
                    <field name="partner_id"  invisible='1'/>
                    <xpath expr="//field[@name='bank_account_id']" position="replace">
                        <field name="bank_account_id" context="{'display_partner':True,'form_view_ref':'stpi_contract_pr.hr_employee_bank_account_form_view','default_partner_id':partner_id}"/>
                    </xpath>
                </form>
            </field>
        </record>

    </data>
</odoo>