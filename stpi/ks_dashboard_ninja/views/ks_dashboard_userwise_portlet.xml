<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "model" -->
        <record id="view_kw_user_portletstree" model="ir.ui.view">
            <field name="name">view.kw_user_portlets.tree</field>
            <field name="model">kw_user_portlets</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_user_portletstree" create="true" delete="true" edit="true" editable="top">
                    <field name="employee_id" />
                    <field name="ks_dashboard_ninja_board_id"/>
                    <field name="ks_dashboard_items_id"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_user_portletsform" model="ir.ui.view">
            <field name="name">view.kw_user_portlets.form</field>
            <field name="model">kw_user_portlets</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="kw_user_portletsform">
                    <!-- <script>
                        $('#create_portlet').click(function(){
                            window.location.reload();
                        });
                    </script> -->
                    <group>
                        <group>
                            <field name="employee_id" readonly="1" options="{'no_open':True}"/>
                            <field name="ks_dashboard_ninja_board_id" context="{'current_id': id}" invisible="1"/>
                        </group>
                        <group>
                            <field name="ks_dashboard_items_id" context="{'current_id': id}" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Save' id="create_portlet" name="create_portlet" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_kw_user_portletssearch" model="ir.ui.view">
            <field name="name">view.kw_user_portlets.search</field>
            <field name="model">kw_user_portlets</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_user_portletssearch">
                    <field name="employee_id" />
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_kw_user_portletsact_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Porlets</field>
            <field name="res_model">kw_user_portlets</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_kw_user_portletssearch" />
            <field name="help" type="html">
                <p class="o_view_nocontent_neutral_face">
                    No portlets created...
                </p>
            </field>
        </record>  

        <!-- <menuitem id="menu_user_portlets" name="Portlets" parent="ks_dashboard_ninja.board_menu_root" action="action_kw_user_portletsact_window" /> -->
    </data>
</odoo>
