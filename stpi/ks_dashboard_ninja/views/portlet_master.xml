<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">
        <!-- Tree view for "model" -->
        <record id="view_portlet_master_tree" model="ir.ui.view">
            <field name="name">view.portlet_master.tree</field>
            <field name="model">portlet_master</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="portlet_master_tree" create="true" delete="true" edit="true" editable="top">
                    <field name="name" />
                    <field name="portlet_code" />
                </tree>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_portlet_master_search" model="ir.ui.view">
            <field name="name">view.portlet_master.search</field>
            <field name="model">portlet_master</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="portlet_master_search">
                    <field name="name" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_portlet_master_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Portlet Master</field>
            <field name="res_model">portlet_master</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_portlet_master_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_neutral_face">
                    Create A Portlet.
                </p>
            </field>
        </record>

        
	</data>
</odoo>
