<odoo>
	<data>

		<record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.employee</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                    <h2>Settings</h2>
                    <div class="row mt16 o_settings_container" id="pmrf_deduct_days">

                        <div class="col-12 col-lg-6 o_setting_box" title="PMRF Deduction Days">
                            <div class="o_setting_right_pane">
                                <label for="pmrf_deduct_days"/>
                                <div class="text-muted">
                                    Please set number of days for which BASIC + DA will be deducted to PMRF.
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="pmrf_deduct_days"/>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="slip_visible_day"/>
                                <div class="text-muted">
                                    Please set day post which employees will be allowed to download salary slip.
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="slip_visible_day"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

	</data>
</odoo>