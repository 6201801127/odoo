<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="arrear_batch_view_tree" model="ir.ui.view">
            <field name="name">arrear.batch.view.tree</field>
            <field name="model">arrear.batch</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name" />
                    <field name="arrear_type" />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="confirm_date" />
                    <field name="center_id" />
                    <field name="state" />
                    
                </tree>
            </field>
        </record>

        <record id="arrear_batch_view_form" model="ir.ui.view">
            <field name="name">arrear.batch.view.form</field>
            <field name="model">arrear.batch</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="confirm_batch" string="Confirm"  type="object" class="btn-primary" states="draft"/>
                        <button name="%(generate_arrear)d" type="action" class="btn-primary" 
                                    string="Generate Arrear" context="{'branch_id': center_id}"/>
                        <field name="state" widget='statusbar'/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required='1'/>
                        </h1>
                        <group col="4">
                            <label for="date_from" string="Period"/>
                             <div>
                                   <field name="date_from" class="oe_inline"/> - <field name="date_to" class="oe_inline"/>
                             </div>
                            <field name="confirm_date"/>
                            <field name="arrear_type" />
                            <field name="center_id" 
                                    options='{"no_open": True, "no_create": True, "no_edit": True}'/>
                        </group>
                        <separator string="Arrear"/>
                        <field name="arrear_ids" readonly='1' force_save='1'/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="arrear_batch_action_menu" model="ir.actions.act_window">   
            <field name="name">Batch Arrear</field>
            <field name="type">ir.actions.act_window</field> 
            <field name="res_model">arrear.batch</field> 
            <field name="view_mode">tree,form</field> 
        
        </record>

        <menuitem id="arrear_sub_menu" name="Batch Arrear" parent="menu_arrear"
                    action="arrear_batch_action_menu" sequence="2" />

    </data>
</odoo>
