<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_generate_arrear_form" model="ir.ui.view">
            <field name="name">Generate Arrear</field>
            <field name="model">generate.arrear</field>
            <field name="arch" type="xml">
                <form string="Arrear of Employees">
                    <header>
                        <button name="compute_batch_arrear" string="Compute Arrear" type="object" 
                                class="btn-primary"/>

                    </header>
                    <group>
                        <span colspan="4" nolabel="1">This wizard will generate Arrear of the Selected Employee.</span>
                    </group>
                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1" domain="[('branch_id', '=', context.get('branch_id'))]"/>
                    </group>
               </form>
            </field>
        </record>

        <record id="generate_arrear" model="ir.actions.act_window">
            <field name="name">Generate Arrear</field>
            <field name="res_model">generate.arrear</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_generate_arrear_form"/>
            <field name="target">new</field>
        </record>

</odoo>
