<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_job_opening_lines_form" model="ir.ui.view">
            <field name="name">view.job_opening_lines.form</field>
            <field name="model">job.opening.lines</field>
            <field name="arch" type="xml">
                <form string="Job Opening Line">
                <style>
                    .btn-primary:not([class*="o_select_file_button"]):nth-child(2){
                        display:none !important;
                    }
                </style>
                    <sheet>
                        <group>
                            <group>
                                <field name="is_group_A" invisible="1"/>
                                <field name="group_id" required="1" options="{'no_create': True, 'no_open': True, 'no_edit': True, 'no_create_edit': True}"/>
                                <field name="job_id" required="1" options="{'no_create': True, 'no_open': True, 'no_edit': True, 'no_create_edit': True}"/>
                                <field name="state_id" options="{'no_create': True, 'no_open': True, 'no_edit': True, 'no_create_edit': True}"/>
                                <field name="directorate_id" required="1" options="{'no_create': True, 'no_open': True, 'no_edit': True, 'no_create_edit': True}"/>
                                <field name="branch_id" options="{'no_create': True, 'no_open': True, 'no_edit': True, 'no_create_edit': True}" attrs="{'required':[('is_group_A','=',False)]}"/>
                                <!-- 'invisible':[('is_group_A','=',True)], -->
                                <field name="date" required="1"/>
                            </group>
                            <group>
                                <field name="roster_line_id"/>
                                <field name="employee_type"/>
                                <field name="category_id" readonly="1" force_save="1"/>
                                <field name="state" readonly="1" force_save="1"/>
                                <!-- <field name="branch_id" readonly="1" force_save="1" /> -->
                                <field name="remarks" readonly="1" force_save="1"/>
                            </group>
                        </group>

                    </sheet>

                </form>
            </field>
        </record>

    </data>
</odoo>