<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="recruitmentjobop_tree_view" model="ir.ui.view">
        <field name="name">recruitment.jobop.tree</field>
        <field name="model">recruitment.jobop</field>
        <field name="arch" type="xml">
            <tree string="Job Opening">
                <field name="requested_by"/>
                <field name="requested_on"/>
                <field name="branch_id"/>
                <field name="job_ids" widget="many2many_tags" readonly="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="recruitmentjobop_form_view" model="ir.ui.view">
        <field name="name">recruitment.jobop.form</field>
        <field name="model">recruitment.jobop</field>
        <field name="arch" type="xml">
            <form string="Job Opening">
                <header>
                    <button name="button_draft" string="Reset to draft" class="oe_highlight" type="object" states="to_approve" groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <button name="button_to_approve" string="Send for approval" class="oe_highlight" type="object" states="draft" groups="hr_recruitment.group_hr_recruitment_user"/>
                    <button name="button_approved" string="Approve" type="object" states="to_approve" groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <button name="button_reject" string="Reject" class="oe_highlight" type="object" states="to_approve" groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <button name="button_create_advertisemtnt" string="Create Advertisement" class="oe_highlight" type="object" states="approved" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="requested_by" readonly="1" required="1" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="requested_on" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="branch_id" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name = "JobOpeninglines" string = "Job Opening lines">
                            <field name="job_pos" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_job_opening_branch':branch_id}">
                                <tree>
                                    <field name="job_opening_id" invisible="1"/>
                                    <!-- <field name="job_opening_branch" invisible="1"/> -->
                                    <field name="job_id"/>
                                    <field name="date"/>
                                    <field name="state_id"/>
                                    <field name="directorate_id"/>
                                    <field name="branch_id"/>
                                    <field name="roster_line_id"/>
                                    <field name="category_id"/>
                                    <!-- <field name="branch_id" readonly="1" /> -->
                                    <field name="group_id"/>
                                    <field name="remarks"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--=====Sequence ofVigilance=====-->
    <record id="seq_job_op" model="ir.sequence">
        <field name="name">Job Opening sequence</field>
        <field name="code">recruitment.jobop</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"/>
    </record>


    <record id="recruitment_jobop_menu_action_new" model="ir.actions.act_window">
        <field name="name">Job Opening</field>
        <field name="res_model">recruitment.jobop</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','draft')]</field>
    </record>
    <record id="recruitment_jobop_menu_action_to_approve" model="ir.actions.act_window">
        <field name="name">Job Opening</field>
        <field name="res_model">recruitment.jobop</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','to_approve')]</field>
    </record>
    <record id="recruitment_jobop_menu_action_approved" model="ir.actions.act_window">
        <field name="name">Job Opening - Approved</field>
        <field name="res_model">recruitment.jobop</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','in',['approved','published'])]</field>
    </record>
    <record id="recruitment_jobop_menu_action_rejected" model="ir.actions.act_window">
        <field name="name">Job Opening - Rejected</field>
        <field name="res_model">recruitment.jobop</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','rejected')]</field>
    </record>

    <record id="recruitment_jobop_menu_action_all" model="ir.actions.act_window">
        <field name="name">Job Opening - All</field>
        <field name="res_model">recruitment.jobop</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False, 'delete': False}</field>
    </record>

    <menuitem id="menu_recruitment_jobop" name="Job Opening" parent="hr_recruitment.menu_hr_recruitment_root" sequence="4" />

    <menuitem id="menu_recruitment_jobop_new" name="New" parent="menu_recruitment_jobop" action="recruitment_jobop_menu_action_new" sequence="1" />

    <menuitem id="menu_recruitment_jobop_to_approve" name="To Approve" parent="menu_recruitment_jobop" action="recruitment_jobop_menu_action_to_approve" sequence="2" />

    <menuitem id="menu_recruitment_jobop_approved" name="Approved" parent="menu_recruitment_jobop" action="recruitment_jobop_menu_action_approved" sequence="3" />

    <menuitem id="menu_recruitment_jobop_rejected" name="Rejected" parent="menu_recruitment_jobop" action="recruitment_jobop_menu_action_rejected" sequence="4" />
    
    <menuitem id="menu_recruitment_jobop_all" name="All" parent="menu_recruitment_jobop" action="recruitment_jobop_menu_action_all" sequence="5" />

</odoo>