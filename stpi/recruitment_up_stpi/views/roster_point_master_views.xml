<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_roster_point_master_tree" model="ir.ui.view">
            <field name="name">view.roster.point.master.tree</field>
            <field name="model">roster.point.master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" required="1"/>
                    <field name="job_id" options="{'no_create_edit': True}"/>
                    <field name="category_id"/>
                    <!-- <field name="sanctionedpost"/> -->
                    <field name="state_id"/>
                    <field name="branch_id" />
                </tree>
            </field>
        </record>

        <record id="view_roster_point_master_form" model="ir.ui.view">
            <field name="name">view.roster.point.master.form</field>
            <field name="model">roster.point.master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="is_group_a" invisible="1"/>
                                <field name="name"/>
                                <field name="job_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <field name="sanctionedpost"/>
                            </group>
                            <group>
                                <field name="state_id" domain="[('country_id.code','=','IN')]" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <!-- attrs="{'invisible':[('is_group_a','=',True)],'required':[('is_group_a','=',False)]}" -->
                                <field name="branch_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <field name="category_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <!-- attrs="{'invisible':[('is_group_a','=',True)],'required':[('is_group_a','=',False)]}" -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_roster_point_master_search" model="ir.ui.view">
            <field name="name">view.roster.point.master.search</field>
            <field name="model">roster.point.master</field>
            <field name="arch" type="xml">
               <search string="Roster Point Master">
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="category_id"/>
                    <field name="state_id"/>
                    <field name="branch_id"/>
                  
                    <filter string="Job Position" name="filter_job_position" context="{'group_by':'job_id'}"/>
                    <!-- <filter string="Category" name="filter_category" context="{'group_by':'category_id'}"/> -->
                    <filter string="State" name="filter_state" context="{'group_by':'state_id'}"/>
                    <filter string="Center" name="filter_branch" context="{'group_by':'branch_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_roster_point_master_window" model="ir.actions.act_window">
            <field name="name">Roster Point Master</field>
            <field name="res_model">roster.point.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_roster_point_master" name="Point Master" 
        parent="menu_recruitment_roster_parent" action="action_roster_point_master_window" sequence="1" />
    </data>
</odoo>