<odoo>

    <record model="ir.actions.act_window" id="hr_recruitment.action_hr_job">
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.ui.view" id="hr_job_applicant_inherited">
        <field name="name">hr.job.view.extened</field>
        <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <xpath expr='//div[@name="application_button"]' position="replace">
                <div name="application_button" class="col-6 o_kanban_primary_left">
                    <button class="btn btn-primary" name="view_job_applicants" type="object">
                        <field name="application_count"/> Application(s)
                    </button>
                </div>
            </xpath>
        </field>
    </record>

