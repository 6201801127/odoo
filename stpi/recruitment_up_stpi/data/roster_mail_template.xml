<?xml version="1.0"?>
<odoo>
    <data>
        <record id="recruitment_roster_notify_mail_template" model="mail.template">
            <field name="name">Roster Created Notify Mail Template</field>
            <field name="model_id" ref="recruitment_up_stpi.model_recruitment_roster"/>
            <field name="subject">Creation Of New Roster : ${object.number}</field>
            <field name="email_from">${user.email or object.create_uid.email}</field>
            <field name="email_to">${user.email or object.create_uid.email}</field>
            <!-- <field name="email_cc"></field> -->
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                    Hi ${user.name},
                </span>
                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                            Please find below the details for created roaster.
                    </p>
                    <table  style="border: 1px solid black; border-collapse: collapse;  margin-left:auto; margin-right:auto;">
                        <thead style="background-color:#eee; color:black;">
                            <tr style="border: 1px solid black;">
                                <th style="border:1px solid black;padding:20px;">State</th>
                                <th style="border:1px solid black;padding:20px;">Reserved For</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td style="border: 1px solid black;padding: 20px;">${object.state.name}</td>
                            <td style="border: 1px solid black;padding: 20px;">
                            % for data in object.category_id:
                                ${data.name}
                            % endfor
                            </td>
                        </tr>
                        </tbody>
                    </table>
                ]]>
            </field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>