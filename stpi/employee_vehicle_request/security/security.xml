<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', 'in', ['group_user','default_user'])]"/>
            </function>
            <value eval="{'noupdate': False}" />
        </function>

        <record model="res.groups" id="base.group_user">
            <field name="implied_ids" eval="[(3, ref('fleet.fleet_group_user'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(3,ref('fleet.fleet_group_manager')),(3,ref('fleet.fleet_group_user'))]"/>
        </record>

        <record id="fleet.fleet_group_user" model="res.groups">
            <field name="implied_ids" eval="[(3, ref('base.group_user'))]"/>
        </record>


        <record model="res.groups" id="hr.group_hr_manager">
            <field name="implied_ids" eval="[(3, ref('fleet.fleet_group_manager'))]"/>
        </record>


        <record model="ir.module.category" id="module_vehicle_request_employee">
            <field name="name">Vehicle Request</field>
            <field name="description">Help You For Vehicle Request</field>
            <field name="sequence">21</field>
        </record>


        <record id="group_employee_manager_v" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_vehicle_request_employee"/>
        </record>

        <record id="group_vehicle_request_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_vehicle_request_employee"/>
        </record>

        <!--Added by Sangita Branch Rule-->
        <!-- <record model="ir.module.category" id="module_vehicle_request_employee">
            <field name="name">Vehicle Request</field>
            <field name="description">Help You For Vehicle Request</field>
            <field name="sequence">21</field>
        </record> -->

        <record id="vehicle_manager_record_rule" model="ir.rule">
            <field name="name">Vehicle Request : Manager center records only.</field>
            <field name="model_id" ref="employee_vehicle_request.model_employee_fleet"/>
            <field name="domain_force">['|', ('branch_id','=',False), ('branch_id','in',[g.id for g in user.branch_ids])]</field>
            <field name="groups" eval="[(3, ref('base.group_user')),(4,ref('group_employee_manager_v'))]"/>
        </record>

        <record id="vehicle_officer_record_rule" model="ir.rule">
            <field name="name">Vehicle Request : Officer own records only.</field>
            <field name="model_id" ref="employee_vehicle_request.model_employee_fleet"/>
            <field name="domain_force">[('employee.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_vehicle_request_officer'))]"/>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', 'in', ['group_user'])]"/>
            </function>
            <value eval="{'noupdate': True}" />
        </function>

    </data>
</odoo>
