<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!--=======Tree view of Reimbursement=======-->
    <record id="reimbursement_tree_view" model="ir.ui.view">
        <field name="name">reimbursement.tree</field>
        <field name="model">reimbursement</field>
        <field name="arch" type="xml">
            <tree string="Reimbursement">
                <field name="reimbursement_sequence"/>
                <field name="employee_id"/>
                <field name="name" invisible="1"/>
                <field name="reimbursement_type_id"/>
                <field name="working_days"/>
                <field name="claimed_amount"/>
                <field name="net_amount"/>
                <field name="approved_amount"/>
                <field name="state"/>
                <field name="__last_update"/>
                <field name="write_uid"/>
                <field name="payment_advice"/>
                <button name="button_submit" string="Submit" type="object" states="draft"/>
                <button name="button_reset_to_draft" string="Send Back" type="object" states="waiting_for_approval"/>
                <!-- <button name="button_approved" string="Forward" type="object" states="waiting_for_approval" groups ="reimbursement_stpi.group_approving_authority"/> -->
                <button name="open_approve_wizard" string="Forward" type="object" states="waiting_for_approval"
                            groups ="reimbursement_stpi.group_approving_authority" invisible="1"/>
                <button name="button_reject" string="Reject" type="object" attrs="{'invisible':[('state','not in',('waiting_for_approval'))]}"/>
            </tree>
        </field>
    </record>

    <!--=======Form view of Reimbursement=======-->
    <record id="reimbursement_form_view" model="ir.ui.view">
        <field name="name">reimbursement.form</field>
        <field name="model">reimbursement</field>
        <field name="arch" type="xml">
            <form string="Reimbursement">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_reset_to_draft" string="Revert" type="object" states="waiting_for_approval"/>
                    <!-- <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="waiting_for_approval" groups ="reimbursement_stpi.group_approving_authority"/> -->
                    <button name="open_approve_wizard" string="Approve" class="oe_highlight" type="object" states="waiting_for_approval" groups="reimbursement_stpi.group_approving_authority"/>
                    <button name="button_reject" string="Reject" type="object" attrs="{'invisible':[('state','not in',('waiting_for_approval'))]}"/>
                    <button name="add_dependents" string="Add Dependents" type="object" attrs="{'invisible':[('name','not in',('tuition_fee','hostel'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval ,approved" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reimbursement_sequence" invisible="1"/>
                            <field name="check_manager" invisible="1"/>
                            <field name="check_admin" invisible="1"/>
                            <field name="employee_id" attrs="{'readonly':['|', ('state', '=', 'approved'), ('check_admin', '=', False)]}" 
                                    required="1" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/> <!-- readonly="context.get('uid') != 2" -->
                            <field name="job_id" readonly="1" force_save="1" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="branch_id" readonly="1" force_save="1" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="department_id" readonly="1" force_save="1" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="name" invisible="1"/>
                            <!-- <label string="Claim Submission Period :" attrs="{'invisible':['name','!=','telephone']}"/>-->
                            <field name="reimbursement_type_id" attrs="{'readonly':[('state','not in',('draft'))], 'required':[('state','in',('draft'))]}"
                                    options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <label for="date_range" string="Claim Submission period" context="{'order_display': 'date_start desc'}"
                                    attrs="{'invisible':[('name', '=', 'briefcase')]}"/>
                            <!-- <label for="date_range" string="Claim Submission period" attrs="{'invisible':[('name','not in',('telephone'))]}"/>-->
                            <!-- <label for="date_range" string="Date Range" attrs="{'invisible':[('name','in',('telephone'))]}"/>-->
                            <field name="date_range" context="{'order_display': 'date_start desc'}" attrs="{'readonly':[('state','not in',('draft'))], 'required':[('state','in',('draft')),('name','not in',('briefcase'))],'invisible':[('name','in',('briefcase'))]}" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" nolabel="1"/>
                            <field name="brief_date" attrs="{'invisible':[('name','not in',('briefcase'))],'required':[('name','in',('briefcase'))],'readonly':[('state','not in',('draft'))]}"/>
                            <field name="lunch_tds_amt" invisible="1"/>
                            <field name="hostel_exempt_amount" invisible="1"/>
                            <field name="tuition_exempt_amount" invisible="1"/>
                        </group>
                        <group attrs="{'invisible': [('name', 'not in', ('tuition_fee', 'hostel'))]}">
                            <field name="dependent_ids">
                                <tree create="0" delete="0" editable="top">
                                    <field name="name"/>
                                    <field name="dob"/>
                                    <field name="school_inst_name"/>
                                    <field name="class_name"/>
                                    <field name="reimbursement_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Reimbursement Details">
                            <tree>
                                <group>
                                    <group>
                                        <field name="invoice_number" attrs="{'invisible':[('name','not in',('briefcase'))],'required':[('name','in',('briefcase'))],'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="invoice_date" attrs="{'invisible':[('name','not in',('briefcase'))],'required':[('name','in',('briefcase'))],'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="last_brief_date" attrs="{'invisible':[('name','not in',('briefcase'))],'readonly':[('name','in',('briefcase'))]}" force_save="1"/>
                                        <field name="working_days" attrs="{'invisible': [('name', '!=', 'lunch')], 'readonly':[('state','!=', 'draft')]}"/>
                                        <field name="working_days_approver" attrs="{'invisible': ['|',('check_manager', '=', False),('name', '!=', 'lunch'),('state','!=','approved')], 'readonly':['|', ('state','!=', 'waiting_for_approval'),('check_manager','=',False)]}"/>
                                        <field name="amount_lunch" readonly="1" attrs="{'invisible':[('name','not in',('lunch'))]}" force_save="1"/>
                                        <field name="el_in_account" readonly="1" force_save="1" attrs="{'invisible':[('name','not in',('el_encashment'))]}"/>
                                        <field name="el_taking" required="1" attrs="{'invisible':[('name','not in',('el_encashment'))]}"/>
                                        <field name="service_provider" attrs="{'invisible': [('name', '!=', 'telephone'), ('name', '!=', 'mobile'), ('name', '!=', 'broadband')], 'readonly':[('state','not in',('draft'))]}" options="{'no_create_edit': True, 'no_open': True}"/>
                                        <field name="mobile_no" attrs="{'invisible': [('name', '!=', 'telephone'), ('name', '!=', 'mobile')], 'readonly':[('state','!=','draft')]}"/>
                                        <field name="phone" attrs="{'invisible':[('name','not in',('telephone','mobile','broadband'))],'required':[('name','in',('telephone','mobile','broadband'))], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="bill_no" attrs="{'invisible': [('name', '!=', 'telephone'), ('name', '!=', 'mobile'), ('name', '!=', 'broadband'), ('name', '!=', 'quarterly')], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="no_of_months" attrs="{'invisible': [('name', 'not in', ['tuition_fee', 'hostel'])], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="billing_from" attrs="{'invisible': [('name', '!=', 'telephone'), ('name', '!=', 'mobile'), ('name', '!=', 'broadband')], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="billing_to" attrs="{'invisible': [('name', '!=', 'telephone'), ('name', '!=', 'mobile'), ('name', '!=', 'broadband')], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="attach_news" attrs="{'invisible': [('name', '!=', 'quarterly')], 'readonly':[('state','not in',('draft'))]}" string='Attachment'/>
                                        <field name="bill_due_date" attrs="{'invisible': [('name', '!=', 'telephone'), ('name', '!=', 'mobile'), ('name', '!=', 'broadband')], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="tution_document" attrs="{'invisible': [('name', 'not in', ('tuition_fee','hostel'))], 'readonly':[('state','not in',('draft'))]}"/>
                                        <field name="remarks" attrs="{'readonly':[('state','not in',('draft'))]}"/>
                                    </group>
                                    <group>
                                        <field name="claimed_amount" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('name','in',('lunch','el_encashment'))]}"/>
                                        <field name="net_amount" force_save="1"/>
                                        <field name="approved_amount" readonly="1" attrs="{'invisible':[('state','!=','approved')]}" force_save="1"/>
                                        <field name="approve_amount_approver" attrs="{'invisible':['|',('name', '=', 'lunch'), ('state','in',('draft','approved'))], 'readonly': [('state', '!=', 'waiting_for_approval')]}" string="Approved Amount" groups="reimbursement_stpi.group_approving_authority"/>
                                        <field name="maximum_eligible_amount" attrs="{'invisible': [('state', '!=', False)]}"/>
                                    </group>
                                </group>
                            </tree>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="seq_reimbursement_sequence" model="ir.sequence">
