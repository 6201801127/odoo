    <record id="view_reimbursement_attendance_compare_form" model="ir.ui.view">
        <field name="name">reimbursement_attendance_compare_form</field>
        <field name="model">reimbursement</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="18"/>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").show();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <sheet>
                    <group>
                        <field name="attendance_days" string="Working days as per Attendance" invisible="not context.get('attendance_required')"/>
                        <field name="working_days" readonly="1" string="Working days as per Employee" invisible="not context.get('as_per_employee')"/>
                        <field name="working_days_approver" readonly="1" string="Working days as per Approver" invisible="not context.get('as_per_employee')"/>
                        <p invisible="context.get('hidden')" class="text-danger">
                            Please check difference in days, post approval working days as per 
                            approver will be considered.
                        </p>
                    </group>
                    <footer>
                        <button name="button_approved" type="object" string="Submit" class="btn btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_claim_amount_eligible_amount_form" model="ir.ui.view">
        <field name="name">reimbursement.claim.eligible.form</field>
        <field name="model">reimbursement</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").show();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <sheet>
                    <group>
                        <field name="claimed_amount" readonly="1"/>
                        <field name="net_amount" readonly="1"/>
                        <field name="approve_amount_approver" string="Approved Amount" readonly="1"/>
                        <p invisible="context.get('hidden')" class="text-danger">
                            Please check difference in claimed amount and approved amount, post approval approved amount as per approver will be considered.
                        </p>
