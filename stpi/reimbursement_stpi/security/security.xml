<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_reimbursement">
        <field name="name">Reimbursement</field>
        <field name="description">Help You For Reimbursement</field>
        <field name="sequence">21</field>
    </record>


    <record id="group_approving_authority" model="res.groups">
        <field name="name">Manager</field>
        <field name="stpi">1</field>
        <field name="category_id" ref="module_reimbursement"/>
    </record>

    <record id="group_finance_authority" model="res.groups">
        <field name="name">Finance</field>
        <field name="stpi">1</field>
        <field name="category_id" ref="module_reimbursement"/>
    </record>


    <record id="group_reimbursement_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_reimbursement"/>
        </record>

    <record id="groups_inherit.group_employee_type_regular" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('reimbursement_stpi.group_reimbursement_officer')),(3, ref('reimbursement_stpi.group_approving_authority'))]"/>
    </record>

    <record id="groups_inherit.group_employee_type_contractual_with_stpi" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('reimbursement_stpi.group_reimbursement_officer')),(3, ref('reimbursement_stpi.group_approving_authority'))]"/>
    </record>

    <record id="groups_inherit.group_employee_type_contractual_with_agency" model="res.groups">
        <field name="implied_ids" eval="[(3, ref('reimbursement_stpi.group_reimbursement_officer')),(3, ref('reimbursement_stpi.group_approving_authority'))]"/>
    </record>

    <record id="reimbursement_manager_rule" model="ir.rule">
        <field name="name">Reimbursement : Manager own center records</field>
        <field name="model_id" ref="model_reimbursement"/>
       <field name="domain_force">['|', ('branch_id','=',False), ('branch_id','in',[g.id for g in user.branch_ids])]</field>
       <field name="groups" eval="[[6,0,[ref('group_approving_authority')]]]"/>
    </record>

    <record id="reimbursement_finance_rule" model="ir.rule">
        <field name="name">Reimbursement : Finance own center records</field>
        <field name="model_id" ref="model_reimbursement"/>
       <field name="domain_force">['|', ('branch_id','=',False), ('branch_id','in',[g.id for g in user.branch_ids])]</field>
       <field name="groups" eval="[[6,0,[ref('group_finance_authority')]]]"/>
    </record>

    <record id="reimbursement_officer_record_rule" model="ir.rule">
      <field name="name">Reimbursement: Officer Record Rule</field>
      <field name="model_id" ref="model_reimbursement"/>
      <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
      <field name="groups" eval="[[6,0,[ref('group_reimbursement_officer')]]]"/>
   </record>

    <record id="reimbursement_attendance_manager_rule" model="ir.rule">
        <field name="name">Reimbursement Attendance: Manager own center records</field>
        <field name="model_id" ref="model_reimbursement_attendence"/>
       <field name="domain_force">['|', ('employee_id.branch_id','=',False), ('employee_id.branch_id','in',[g.id for g in user.branch_ids])]</field>
       <field name="groups" eval="[[6,0,[ref('group_approving_authority')]]]"/>
    </record>


    <!-- <record id="reimbursement_user_rule" model="ir.rule">
        <field name="name">Reimbursement : User own record only</field>
        <field name="model_id" ref="model_reimbursement"/>
       <field name="domain_force">[('create_uid','=',user.id)]</field>
       <field name="groups" eval="[[6,0,[ref('base.group_user')]]]"/>
    </record> -->

</odoo>