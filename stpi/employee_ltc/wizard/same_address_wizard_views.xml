<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_same_address_wizard_form" model="ir.ui.view">
            <field name="name">view.same_address_wizard.form</field>
            <field name="model">same_address_wizard</field>
            <field name="arch" type="xml">
                <form string="Same Address">
                    <group>
                        <group>
                            <field name="ltc_id" invisible="1"/>
                        </group>

                        <p class="pull-left">
                            The employees has same city for hometown and work.Are you sure to confirm ?
                        </p>
                    </group>

                    <newline/>
                    
                    <footer>
                        <button name="button_confirm" string="Confirm" colspan="1" type="object" class ="oe_highlight"/>
                        <button string="Cancel" icon="fa-close" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>