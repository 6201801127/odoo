<odoo>
    <data>


      <record id="indent_button_confirm_view" model="ir.ui.view">
            <field name="name">indent.confirm.form</field>
            <field name="model">indent.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirmation">
                    <field name="remark" required="1" />
                    <field name="item_line_id" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <field name="is_2nd_level" invisible="1"/>
                    <footer>
                        <button string="Confirm" name="button_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
        
        