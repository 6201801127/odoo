<odoo>
    <!--==========Form view of Employee Indent Advance==========-->
    <record id="grn_request_form_view" model="ir.ui.view">
        <field name="name">grn.request.form</field>
        <field name="model">indent.request</field>
        <field name="arch" type="xml">
            <form string="Indent">
                <header>
                    <button name="button_to_approve" string="Send for Approval" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_reset_to_draft" string="Send Back" type="object" states="to_approve"/>
                    <button name="button_approved" 
                    	string="Forward" 
                    	class="oe_highlight" 
                    	type="object" 
                    	attrs="{'invisible':['|',('indent_type','=', 'issue'),('state','!=','to_approve')]}"
                    	groups="indent_stpi.group_grn_manager"/>
                    <button name="button_reject" 
                    		string="Reject" 
                    		type="object" 
                    		attrs="{'invisible':['|',('indent_type','=', 'issue'),('state','!=','to_approve')]}"
                    		groups="indent_stpi.group_grn_manager"/>
                    
                    
                   	<field name="state" widget="statusbar" 
                   			statusbar_visible="draft,to_approve,approved,rejected" 
                    	/>
                   	
                </header>
                <sheet>
                	
                    <group>
                        <group>
                            <field name="indent_sequence" readonly="True"/>
                            <field name="employee_id" readonly="1" required="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="branch_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="requested_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="job_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="department_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="indent_type" readonly="1" />
                        </group>
                        <group>
                            <!-- <field name="vendor_info" string='Vendor' attrs="{ 'readonly':[('state','!=', 'draft')]}" />-->
                           <field name="vendor_id" string='Vendor'
                            	attrs="{ 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="bill_no" attrs="{ 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="bill_date" attrs="{ 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="upload_invoice" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                            <field name="filename" invisible="1"/>
                            <field name="amount" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="received_by" 
                            	attrs="{ 'readonly':[('state','!=', 'draft')]}"
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                            	/>
                            <field name="item_checked_by" attrs="{ 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="date_of_receive" attrs="{ 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="purchase_date" attrs="{ 'readonly':[('state','!=', 'draft')]}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Item Details">
                            <field name="item_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="request_id" invisible="1"/>
                                    <field name="item_category_id" required="1"
                                    	attrs="{'readonly': [('parent.state', '!=', 'draft')]}" 
                                    	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                    <field name="item_id" required="1" 
                                    	attrs="{'readonly': [('parent.state', '!=', 'draft')]}"
                                    	options="{'no_open': True}"  domain="[('category_id','=',item_category_id)]"/>
                                    <field name="specification" required="1" readonly="1" force_save="1"/>
                                    <field name="requested_quantity" required="1" string="Received Quantity" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    <field name="amount" widget='monetary' options="{'currency_field': 'currency_id'}" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    
                                    <field name="requested_date" required="1" attrs="{'readonly': [('parent.state', '!=', 'draft')]}" />
                                    <field name="issue_approved" invisible="1"/>
                                    <field name="approved_quantity" attrs="{'column_invisible': [('parent.state', '=', 'draft')],'invisible': [('parent.state', '=', 'draft')]}"/>
                                    <field name="approved_date" string="Approved Date" attrs="{'column_invisible': [('parent.state', '!=', 'approved')],'invisible': [('parent.state', '!=', 'approved')],'readonly': [('issue_approved', '!=', False)]}"/>
                                    <field name="state" invisible="1"/>
                                    <field name="user_id" invisible="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    
    <record id="employeeIndent_request_form_view" model="ir.ui.view">
        <field name="name">indent.request.form</field>
        <field name="model">indent.request</field>
        <field name="arch" type="xml">
            <form string="Indent">
                <header>
                    <button name="button_to_approve" string="Send for Approval" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_reset_to_draft" string="Send Back" type="object" states="to_approve"/>
                    		
           			<button name="button_cancel" string="Cancel" type="object" 
           					attrs="{'invisible':[('is_usr_activity','=',False)]}"
           					/>
               		<!-- <button name="button_approved" 
                    	string="Forward" 
                    	class="oe_highlight" 
                    	type="object" 
                    	attrs="{'invisible':['|',('indent_type','=', 'grn'),('state','!=','to_approve')]}"
                    	groups="indent_stpi.group_indent_approver"/>
                    <button name="button_reject" 
                    		string="Reject" 
                    		type="object" 
                    		attrs="{'invisible':['|',('indent_type','=', 'grn'),('state','!=','to_approve')]}"
                    		groups="indent_stpi.group_indent_approver"/> -->
                    
                   	
                   	<field name="state" widget="statusbar" statusbar_visible="draft,to_approve,inprogress,approved,cancel,rejected" 
                    	attrs="{'invisible': [('indent_type', '=', 'grn')]}"/>
                   	<field name="is_usr_activity"  string='Is the indent approved' invisible="1" />
                </header>
                <sheet>
                	<!-- <div class="oe_button_box" name="button_box" groups="indent_stpi.group_indent_approver">
                       <button name="action_view_items" type="object" class="oe_stat_button" icon="fa-pencil-square-o" 
                        		attrs="{'invisible': ['|',('state', '=', 'draft'),('indent_type', '=', 'grn')]}">
                            Item's
                        </button>
                    </div> -->
                    <group>
                        <group>
                            <field name="indent_sequence" readonly="True"/>
                            <field name="employee_id" readonly="1" required="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="branch_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="requested_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="job_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="department_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="indent_type" readonly="1" />
                            <field name="item_receive_user" invisible="1"/>
                        </group>
                       
                    </group>
                    <notebook>
                        <page string="Item Details">
                            <field name="item_ids"  mode="tree" >
                                <tree editable="bottom" delete="0" >
                                
                                    <field name="request_id" invisible="1"/>
                                    <field name="item_category" required="1"
                                    	attrs="{'readonly': [('parent.state', '!=', 'draft')]}" 
                                    	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                                    	string="Item Category" />
                                    	
                                   	<field name="item_sub_category_id" required="1"
                                    	attrs="{'readonly': [('parent.state', '!=', 'draft')]}" 
                                    	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                                    	domain="[('parent_id', '=', item_category)]" 
                                    	string="Item Sub Category" />
                                    	
                                    <field name="item_id" required="1" 
                                    	attrs="{'readonly': [('parent.state', '!=', 'draft')]}"
                                    	domain="[('category_id', '=', item_sub_category_id)]"
                                    	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" string="Item Name"/>
                                    <field name="show_item" invisible="1" />
                                   	<field name="item_details"
                                    	attrs="{'readonly': [('show_item', '!=', True)]}"
                                    	
                                    	/>
                                    
                                   
                                    <field name="specification" required="1" readonly="1" force_save="1" string="Item Specification"/>
                                    <field name="serial_bool" invisible="1" />
                                    
									<field name="requested_spec" string="Required Specification" required="1" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    <field name="requested_quantity" required="1" string="Required Quantity" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    <field name="requested_date" required="1" string="Required Date" attrs="{'readonly': [('parent.state', '!=', 'draft')]}" />
                                    <field name="item_available" attrs="{'column_invisible': [(('parent.state', '=', 'draft'))],'readonly': [('is_1st_level_done', '=',True)]}" required="1" groups="indent_stpi.group_indent_approver,indent_stpi.group_indent_2ndlvl_approver" />
                                    <field name="alternative_item_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" force_save="1"
                                    		groups="indent_stpi.group_indent_approver,indent_stpi.group_indent_2ndlvl_approver" 
                                   			domain="[('category_id', '=', item_sub_category_id),('id','!=',item_id)]"
                                            attrs="{'column_invisible': [(('parent.state', '=', 'draft'))],'readonly': ['|','|',('is_1st_level_done', '=',True),('item_available', '=', False),('item_available', '!=', 'alternate_available')]}"/>
                                   	<field name="temporary_item_id" force_save = '1' invisible="1"/>		
                                	<field name="serial_number" force_save="1"
										domain="[('grn', '=', True),
											 ('issue', '!=', True), 
											 ('branch_id', '=', parent.branch_id),('item_id', '=', temporary_item_id),('state', '=', 'approved')]" 
										options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
										attrs="{'column_invisible': [(('parent.state', '=', 'draft'))],'readonly': ['|','|',('is_1st_level_done', '=',True),('item_available', '=', 'not_available'),('serial_bool', '=', False)]}"
										groups="indent_stpi.group_indent_approver,indent_stpi.group_indent_2ndlvl_approver"
										/>
                                   
                                    <field name="issue_approved" invisible="1"/>
                                    <field name="approved_quantity" force_save="1" attrs="{'column_invisible':[('parent.state', '=', 'draft')], 'invisible': [('parent.state', '=', 'draft')],'readonly': ['|',('item_available','=','not_available'),('is_1st_level_done', '=',True),('parent.indent_type', '=', 'issue')]}"/>
                                    <field name="item_in_stock" attrs="{'column_invisible':[('parent.state', '=', 'draft')]}" groups="indent_stpi.group_indent_approver,indent_stpi.group_indent_2ndlvl_approver"/>
                                    <field name="state" readonly="1" attrs="{'column_invisible':[('parent.state', '!=', 'approved')], 'invisible': [('parent.state', '!=', 'approved')]}"/>
                                    <field name="approved_date" string="Action Date" attrs="{'column_invisible':[('parent.state', '!=', 'approved')], 'invisible': [('parent.state', '!=', 'approved')],'readonly': [('state', '=', 'approved')]}"/>
                                    <field name="user_id" attrs="{'column_invisible':[('parent.state', '!=', 'approved')],'invisible': [('parent.state', '!=', 'approved')],'readonly': [('state', '=', 'approved')]}" />
                                    <field name="remark"  attrs="{'column_invisible': [(('parent.state', 'not in', ['inprogress','approved','cancel','rejected']))]}" readonly="1"/>
                                    <field name="user_receive" attrs="{'column_invisible':[('parent.state', '!=', 'approved')]}" readonly="1" force_save="1" groups="indent_stpi.group_indent_approver,indent_stpi.group_indent_2ndlvl_approver"/>
                                    <field name="is_2nd_level_item" invisible="1" />
                                    <field name="is_1st_level_done" invisible="1" />
                                    <field name="is_2nd_level_done" invisible="1" />
                                    <button name="button_confirm_apr" string="Approve" groups="indent_stpi.group_indent_approver" type="object" attrs="{'invisible': ['|','|',('parent.state','=','draft'),('is_2nd_level_item', '=', True),('is_1st_level_done', '=', True)]}"/>
                                    <button name="button_confirm_reject" string="Reject" groups="indent_stpi.group_indent_approver" type="object" attrs="{'invisible': ['|','|',('parent.state','=','draft'),('is_2nd_level_item', '=', True),('is_1st_level_done', '=', True)]}"/>
                                    <button name="button_send_approval" string="Send for Approval" groups="indent_stpi.group_indent_approver" type="object" attrs="{'invisible': ['|',('is_2nd_level_item', '=', False),('is_1st_level_done', '=', True)]}"/>
                                    <button name="button_confirm_apr" string="Approve" type="object" attrs="{'invisible': ['|',('is_1st_level_done', '=', False),('is_2nd_level_done', '=', True)]}" groups="indent_stpi.group_indent_2ndlvl_approver"/>
                                    <button name="button_confirm_reject" string="Reject" type="object" attrs="{'invisible': ['|',('is_1st_level_done', '=', False),('is_2nd_level_done', '=', True)]}" groups="indent_stpi.group_indent_2ndlvl_approver"/>
                                    <button name="button_confirm_procure" string="To Be procured" type="object"  attrs="{'invisible': ['|',('is_1st_level_done', '=', False),('is_2nd_level_done', '=', True)]}" groups="indent_stpi.group_indent_2ndlvl_approver"/>
                                    <button name="button_delete"  type="object" class="fa fa-trash" attrs="{'invisible': [('parent.state', '!=', 'draft')]}" />
                                    <button name="button_received"  type="object" string="Receive" attrs="{'invisible': ['|','|','|',('parent.item_receive_user', '=', False),('parent.state', '!=', 'approved'),('approved_quantity', '&lt;', 1),('user_receive','=',True)]}"  />
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    
       
        <!--==========Form view of Employee Indent Advance==========-->
    <record id="employeeissue_request_form_view" model="ir.ui.view">
        <field name="name">indent.issue.request.form</field>
        <field name="model">indent.request</field>
        <field name="arch" type="xml">
            <form string="Indent">
                <header>
               		<button name="button_grant" 
                    	string="Grant" 
                    	class="oe_highlight" 
                    	type="object" 
                    	attrs="{'invisible':[('is_approve','=',True)]}"
                    	groups="indent_stpi.group_indent_approver"/>
                    <button name="button_reject" 
                    		string="Reject" 
                    		type="object" 
                    		attrs="{'invisible':[('is_approve','=',True)]}"
                    		groups="indent_stpi.group_indent_approver"/>
                    <field name="state" invisible="1"/>
                    <field name="is_approve" invisible="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="indent_sequence" readonly="True"/>
                            <field name="employee_id" readonly="1" required="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="branch_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="requested_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="job_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="department_id" readonly="1" 
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="indent_type" readonly="1" />
                        </group>
                        <group>
                            <!-- <field name="vendor_info" string='Vendor' attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/> -->
                            <field name="vendor_id" string='Vendor'
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" 
                            	attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="bill_no" attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="bill_date" attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="upload_invoice" attrs="{'invisible':[('indent_type','=', 'issue')],'required':[('indent_type','!=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="filename" invisible="1"/>
                            <field name="amount" widget='monetary' options="{'currency_field': 'currency_id'}"  attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            
                            <field name="received_by" 
                            	attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"
                            	options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                            	/>
                            <field name="item_checked_by" attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="date_of_receive" attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                            <field name="purchase_date" attrs="{'invisible':[('indent_type','=', 'issue')], 'readonly':[('state','!=', 'draft')]}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Item Details">
                            <field name="issue_id">
                                <tree editable="bottom" create="false">
                                    <field name="Indent_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="serial_bool" invisible="1"/>
                                    <field name="item_category_id" readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                    <field name="item_id" readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  domain="[('child_indent_stock','=',item_category_id)]"/>
                                    <field name="specification" required="1" readonly="1" force_save="1"/>
                                    <field name="serial_number" 
	                                    attrs="{'required': [('serial_bool', '=', True)],'invisible': [('serial_bool', '=', False)],'readonly': [('state', '!=', 'to_approve')]}" 
										domain="[('grn', '=', True),
											 ('issue', '!=', True), 
											 ('branch_id', '=', branch_id),
											  ('item_category_id', '=', item_category_id), 
											  ('item_id', '=', item_id), ('state', '=', 'approved')]" 
										options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                    <field name="requested_quantity" readonly="1"/>
                                    <field name="requested_date" readonly="1"/>
                                    <field name="issue_state" readonly="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="approved_quantity" attrs="{'invisible': [('state', '=', 'draft')],'readonly': [('state', '!=', 'to_approve')]}"/>
                                    <field name="approved_date" readonly="1"/>
                                    <!-- <button name="action_show_details" string="Register Serial" type="object" icon="fa-list"  options="{&quot;warn&quot;: true}"/> -->
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                
            </form>
        </field>
    </record>
    
