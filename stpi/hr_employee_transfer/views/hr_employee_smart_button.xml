<odoo>
    <record model="ir.ui.view" id="hr_employee_transfer_smart_button">
        <field name="name">hr.employee.transferbutton</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <field name="validate_details" invisible='1'/>
                <button attrs="{'invisible':['|',('validate_details','=',False),('employee_type','in',['contractual_with_agency','contractual_with_stpi'])]}" name="set_employee_transfer" type="object" class="oe_inline oe_stat_button" icon="fa-arrow-right">
                    <field name="transfers_count" widget="statinfo" string="Employee Transfers"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
