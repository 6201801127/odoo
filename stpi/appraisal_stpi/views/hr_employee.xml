<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_appraisal_form_inherit">
            <field name="name">hr.employee.appraisal</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//page[@name='public']/group" position="inside">
                    <field name="validate_details" invisible='1'/>
                    <group name="appraisal" string="Appraisal Details" attrs="{'invisible':['|',('validate_details','=',False),('employee_type','in',['contractual_with_agency','contractual_with_stpi'])]}">
                        <field name="appraisal_reporting_officer" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        <field name="appraisal_reviewing_officer" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

