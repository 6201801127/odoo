<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_exit_transfer_management">
            <field name="name">Exit Management</field>
            <field name="description">Exit Management</field>
            <field name="sequence">22</field>
        </record>

        <record id="group_exit_admin_department" model="res.groups">
            <field name="name">Admin - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record>

        <record id="group_exit_finance_department" model="res.groups">
            <field name="name">Finance - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record>

        <record id="group_exit_technical_department" model="res.groups">
            <field name="name">Technical - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record>

        <record id="group_exit_personal_department" model="res.groups">
            <field name="name">Personal - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record>

        <record id="group_exit_general_department" model="res.groups">
            <field name="name">General - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record>

        <!-- <record id="group_exit_ro" model="res.groups">
            <field name="name">Reporting Officer - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record> -->

        <record id="group_exit_user" model="res.groups">
            <field name="name">User - Exit Management</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_management"/>
        </record>

    <record id="ir_rule_exit_branch_security" model="ir.rule">
        <field name="model_id" ref="model_exit_transfer_management"/>
        <field name="domain_force">['|', ('branch_id','=',False), ('branch_id.id','in',[g.id for g in user.branch_ids])] </field>
        <field name="name">Own Center Record Rule</field>
        <field name="global" eval="True"/>
        <field name="groups" eval="[(4,ref('exit_transfer_management.group_exit_finance_department')),
                                        (4,ref('exit_transfer_management.group_exit_technical_department')),
                                        (4,ref('exit_transfer_management.group_exit_finance_department')),
                                        (4,ref('exit_transfer_management.group_exit_personal_department')),
                                        (4,ref('exit_transfer_management.group_exit_general_department')),
                                        (4,ref('exit_transfer_management.group_exit_admin_department'))]"/>
    </record>


    <record id="exit_management_user_record_rule" model="ir.rule">
        <field name="name">Exit mangement user</field>
        <field name="model_id" ref="model_exit_transfer_management"/>
       <field name="domain_force">['|',('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id.id','=',user.id)]</field>
      <field name="groups" eval="[(4,ref('exit_transfer_management.group_exit_user'))]"/>
   </record>

   <record id="groups_inherit.group_employee_type_regular" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('exit_transfer_management.group_exit_user'))]"/>
    </record>

    </data>
</odoo>