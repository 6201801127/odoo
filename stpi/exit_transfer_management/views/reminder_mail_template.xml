<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="exit_management_reminder_mail_template" model="mail.template">
            <field name="name">Pending Activities</field>
            <field name="email_from">${object.create_uid.employee_ids.work_email or ''}</field>
            <field name="subject">${object.name} Pending Activities</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="email_cc"></field>
            <field name="model_id" ref="exit_transfer_management.model_exit_transfer_management"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    Dear <b>${object.employee_id.name}</b>,
                    <p> </p>
                    You are requested to complete all your pending Activities for  <b>${object.name}</b>.
                    <br /><br />
			        Thank you.
                ]]>
            </field>
        </record>
    </data>
</odoo>