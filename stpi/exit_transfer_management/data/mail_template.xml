<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data>
        <!--Email template -->
        <record id="email_template_notify_user" model="mail.template">
            <field name="name">Exit Management Email</field>
            <field name="model_id" ref="model_exit_transfer_management"/>
            <field name="email_from">${ctx.get('email_from') |safe}</field>
            <field name="email_to">${ctx.get('email_to') |safe}</field>
            <field name="subject">${ctx.get('subject')}</field>
            <field name="body_html" type="html">
			<div style="margin: 0px; padding: 0px;">
			    <p style="margin: 0px; padding: 0px; font-size: 13px;">
			        Dear,
			            ${ctx.get('recipient_name')},
			        <br /><br />
                    Exit Management has been initiated
			        <br /><br />
			        Thank you.
			    </p>
			</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_transfer_notify_user" model="mail.template">
            <field name="name">Exit Management Transfer Email</field>
            <field name="model_id" ref="model_exit_transfer_management"/>
            <field name="email_from">${ctx.get('email_from') |safe}</field>
            <field name="email_to">${ctx.get('email_to') |safe}</field>
            <field name="subject">${ctx.get('subject')}</field>
            <field name="body_html" type="html">
			<div style="margin: 0px; padding: 0px;">
			    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear,
                    ${ctx.get('recipient_name')},
                <br /><br />
                Mail Template need from STPI.
			    </p>
			</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
