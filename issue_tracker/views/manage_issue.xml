<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="manage_issue_form" model="ir.ui.view">
            <field name="name">Manage Issue</field>
            <field name="model">manage.issue</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="close_issue"
                                id="close_button"
                                type="object"
                                string="Close Issue"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '=', 'close')]}"
                                confirm="Are you sure you want to close it?"/>
                        <button name="reopen_issue"
                                id="re-open_button"
                                type="object"
                                string="Re-Open Issue"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '=', 'open')]}"
                                confirm="Are you sure you want to reopen it?"/>
                        <field name="state" widget="statusbar" statusbar_visible="open,close" />
                        
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">

                            <button name="total_comment" type="object" class="oe_stat_button" icon="fa-list" string="comment">
                                    <div class="o_stat_info">
                                        <field name="comment_count" class="o_stat_value"/>
                                        <span class="o_stat_text"></span>
                                    </div>
                            </button>
                        </div>
                        <group>
                            <field name="issue_name"/>
                        </group>
                        <notebook>
                            <page string="Users">
                                <field name="comment_ids">
                                    <tree string="comment" editable="bottom">
                                        <field name='comment'/>
                                        <field name='user_email'/>
                                        <field name='comment_date'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="manage_issue_tree">
            <field name="name">issue_tracker list</field>
            <field name="model">manage.issue</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="issue_name"/>
                </tree>
            </field>
        </record>

        <record id="manage_issue_action" model="ir.actions.act_window">
            <field name="name">Manage Issue</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manage.issue</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Issues" id="manage_issue_sub_menu" parent="issue_tracker_sub_menu"
                  action="manage_issue_action" sequence="1"/>


    </data>
</odoo>