<odoo>
    <data>

        <record id="resolve_issue_form" model="ir.ui.view">
            <field name="name">Resolve Issue</field>
            <field name="model">resolve.issue</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="issue_names"/>
                            </group>
                            <group>
                                <field name="comment"/>
                                <field name="user_email" invisible="1" />
                                <field name="comment_date" invisible="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="issue_tracker.list">
            <field name="name">Resolve Issue List</field>
            <field name="model">resolve.issue</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="issue_names"/>
                    <field name="comment"/>
                </tree>
            </field>
        </record>

        <record id="resolve_issue_action" model="ir.actions.act_window">
            <field name="name">Resolve Issue Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">resolve.issue</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Top menu item -->
        <menuitem name="Resolve issue"
                  id="resolve_issue_menu_"
                  parent="issue_tracker_sub_menu"
                  action="resolve_issue_action"
                  sequence="2"/>
        
        
    </data>
</odoo>