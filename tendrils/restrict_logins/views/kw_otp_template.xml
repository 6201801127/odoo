<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="restrict_login_template">
			
			<t t-call="website.layout">
				<div class="container">
					<div class="row align-items-center">
						<div class="col-sm-6 col-sm-offset-6 col-md-7">
							<div class="card py-4 pl-5 pr-5">
								<div class="card-body">
									<form name="frm_restrict_logins_otp" id="frm_restrict_loins" class="form-horizontal" method="post" action="javascript:void(0)" autocomplete="off">
                                        <div class="modal fade" id="restrict_login_otp" tabindex="-1" role="dialog" aria-labelledby="RestrictLoginOTP" aria-hidden="false">
                                            <div class="modal-dialog modal-dialog-centered modal-primary" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header text-center">
                                                        <h4 class="modal-title w-100 font-weight-bold"> OTP Verification </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span>&amp;times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body mx-3" id="popup">
                                                        <div class="text-center">
                                                            <span class="text-danger" id="desc"/>
                                                        </div>
                                                        <div class="md-form mx-5">
                                                            <input type="text" class="form-control txtvalid otptext" id="txtOtpNum" name="txtOtpNum" maxlength='4' />
                                                            <label for="txtOtpNum" class="font-weight-bold grey-text reg"> Enter OTP </label>
                                                            <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                            <div class="text-left mx-1" id="resultdata"/>
                                                        </div>
                                                        <div class="text-left mx-5">
                                                            <label for="Time Left" class="col-form-label"> Time Left: </label> &amp;emsp;
                                                            <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer d-flex justify-content-between">
                                                        <button type="button" class="btn btn-success font-weight-bold" id="resendotp"> Resend OTP</button>
                                                        <button type="button" class="btn btn-primary font-weight-bold" id="btnSubmit">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
									</form>
								</div>
							</div>
							<div class="oe_structure" />
						</div>
					</div>
				</div>
			</t>
		</template>
		<record id="restrict_login_page" model="website.page">
			<field name="name"> Restrict login </field>
			<field name="website_published"> True </field>
			<field name="url">/restrict_logins</field>
			<field name="view_id" ref="restrict_login_template" />
		</record>
	</data>
</odoo>
