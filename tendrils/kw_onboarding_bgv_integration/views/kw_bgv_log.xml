<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="kw_bgv_log_list">
            <field name="name">kwonboard_enrollment_bgv_log_list</field>
            <field name="model">kwonboard_enrollment_bgv_log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="enrollment_id"/>
                    <field name="access_token"/>
                    <field name="bgv_id"/>
                    <field name="candidate_id"/>
                    <field name="company_id"/>
                    <field name="experience_id"/>
                </tree>
            </field>
        </record>

        <record id="kw_bgv_log_form" model="ir.ui.view">
            <field name="name">kwonboard_enrollment_bgv_log_form</field>
            <field name="model">kwonboard_enrollment_bgv_log</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Employee Form">
                                <field name="enrollment_id"
                                       options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                <field name="access_token"/>
                                <field name="bgv_request_payload"/>
                                <field name="bgv_response_payload"/>
                                <field name="bgv_id"/>
                            </group>
                            <group string="Candidate Data">
                                <field name="candidate_request_payload"/>
                                <field name="candidate_response_payload"/>
                                <field name="candidate_id"/>
                            </group>
                            <group string="Company Data">
                                <field name="company_request_payload"/>
                                <field name="company_response_payload"/>
                                <field name="company_id"/>
                            </group>
                            <group string="Experiance Data">
                                <field name="experience_request_payload"/>
                                <field name="experience_response_payload"/>
                                <field name="experience_id"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="bgv_log_action_window">
            <field name="name">Applicant BGV Log</field>
            <field name="res_model">kwonboard_enrollment_bgv_log</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Top menu item -->

        <menuitem name="Candidate Background Verification"
                  id="kw_applicant_bgv_log_menu_root"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  sequence="995"/>

        <menuitem name="BGV Log"
                  id="applicant_bgv_menu_1"
                  parent="kw_applicant_bgv_log_menu_root"
                  sequence="1"
                  action="bgv_log_action_window"/>

    </data>
</odoo>