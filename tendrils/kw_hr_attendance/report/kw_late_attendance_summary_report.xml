<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_late_attendance_summary_report_tree" model="ir.ui.view">
            <field name="name">view.kw_late_attendance_summary_report.tree</field>
            <field name="model">kw_late_attendance_summary_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_late_attendance_summary_report_tree" create="false" edit="false" delete="false" import="false" default_order="attendance_year desc,month_number desc,employee_id asc">
                    <!-- <field name="attendance_year" string="Year"/> -->
                    <field name="attendance_month" string="Month"/>
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="branch_id" string="Branch"/>
                    <field name="reporting_authority" />
                    <field name="working_days"/>
                    <field name="total_late_entries" />
                    <field name="lwpc_state" />
                    <field name="lwopc_state" />
                    <field name="pending_at_ra" />
                </tree>
            </field>
        </record>

        <!-- Form view for "model" -->
        <record id="view_kw_late_attendance_summary_report_form" model="ir.ui.view">
            <field name="name">view.kw_late_attendance_summary_report.form</field>
            <field name="model">kw_late_attendance_summary_report</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="false" delete="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="reporting_authority" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="attendance_year" string="Year" />
                                <field name="attendance_month" string="Month" />
                            </group>
                        </group>
                        <notebook>
                            <page string="All" modifiers="{}">
                                <field name="total_late_entries_ids" nolabel='1'>
                                    <tree editable="bottom">
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Actual Login Time" />
                                        <field name="check_in_status" string="Office In Status" />
                                        <field name="late_entry_reason"/>
                                        <field name="le_state" />
                                        <field name="le_action_taken_by" />
                                        <field name="le_authority_remark" />
                                        <field name="le_action_status" />
                                        <!-- <button name="%(kw_hr_attendance.kw_late_entry_reason_wizard_act_window)d" type="action" context="{'current_late_entry_id':id}"  attrs="{'invisible': [('le_state','in',['1','2','3'])]}" string="Submit Reason" class="oe_highlight"/> -->
                                    </tree>
                                </field>
                            </page>
                            <page string="With Pay Cut" modifiers="{}">
                                <field name="lwpc_state_ids" nolabel='1'>
                                    <tree editable="bottom">
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Actual Login Time" />
                                        <field name="check_in_status" string="Office In Status" />
                                        <field name="late_entry_reason"/>
                                        <field name="le_state" />
                                        <field name="le_action_taken_by" />
                                        <field name="le_authority_remark" />
                                        <field name="le_action_status" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Without Pay Cut" modifiers="{}">
                                <field name="lwopc_state_ids" nolabel='1'>
                                    <tree editable="bottom">
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Actual Login Time" />
                                        <field name="check_in_status" string="Office In Status" />
                                        <field name="late_entry_reason"/>
                                        <field name="le_state" />
                                        <field name="le_action_taken_by" />
                                        <field name="le_authority_remark" />
                                        <field name="le_action_status" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Pending At RA" modifiers="{}">
                                <field name="pending_at_ra_ids" nolabel='1'>
                                    <tree editable="bottom">
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Actual Login Time" />
                                        <field name="check_in_status" string="Office In Status" />
                                        <field name="late_entry_reason"/>
                                        <field name="le_state" />
                                        <field name="le_action_taken_by" />
                                        <field name="le_authority_remark" />
                                        <field name="le_action_status" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

