<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_attendance_bio_report_tree" model="ir.ui.view">
            <field name="name">view.kw_attendance_bio_report.tree</field>
            <field name="model">kw_attendance_bio_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Biometric Report" import="false">
                    <field name="emp_name" />
                    <field name="designation" />
                    <field name="department" />
                    <field name="location"/>
                    <field name="bio_id" />
                    <!-- <field name="login_date" /> -->
                    <field name="login_time" />
                </tree>
            </field>
        </record>

        <record id="view_kw_attendance_bio_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_attendance_bio_report.pivot</field>
            <field name="model">kw_attendance_bio_report</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <field name="location" type="row"/>
                </pivot>
            </field>
        </record>

         <record id="view_kw_attendance_bio_report_search" model="ir.ui.view">
            <field name="name">view.kw_attendance_bio_report.search</field>
            <field name="model">kw_attendance_bio_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_attendance_bio_report_search">
                    <field name="emp_name" />
                    <field name="designation" />
                    <field name="department" />
                    <field name="location"/>
                    <field name="bio_id" />
                    <field name="login_date" />
                    <!-- <field name="login_time" /> -->
                    <filter string="Date" name="filter_login_date" date="login_date"/>
                    <filter string="Today" domain="[('login_date', 'like',context_today().strftime('%Y-%m-%d'))]" name="today_bio_attendance"/>
                    <!-- <filter string="This month" domain="[('month_number','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('month_number','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01'))]" name="current_month_attendance"/>
                    <filter string="This Year" domain="[('attendance_year', '=',context_today().strftime('%Y'))]" name="current_year_attendance"/>
                    <filter string="Last Year" domain="[('attendance_year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_attendance"/>   -->
                    <separator/>
                    
                    <!-- <filter string="January" domain="[('month_index','=',1)]" name="january_attendance"/>
                    <filter string="February" domain="[('month_index','=',2)]" name="february_attendance"/>
                    <filter string="March" domain="[('month_index','=',3)]" name="march_attendance"/>
                    <filter string="April" domain="[('month_index','=',4)]" name="april_attendance"/>
                    <filter string="May" domain="[('month_index','=',5)]" name="may_attendance"/>
                    <filter string="June" domain="[('month_index','=',6)]" name="june_attendance"/>
                    <filter string="July" domain="[('month_index','=',7)]" name="july_attendance"/>
                    <filter string="August" domain="[('month_index','=',8)]" name="august_attendance"/>
                    <filter string="September" domain="[('month_index','=',9)]" name="september_attendance"/>
                    <filter string="October" domain="[('month_index','=',10)]" name="october_attendance"/>
                    <filter string="November" domain="[('month_index','=',11)]" name="november_attendance"/>
                    <filter string="December" domain="[('month_index','=',12)]" name="december_attendance"/> -->

                    <group>
                        <filter name="group_by_emp_name" string="Employee" context="{'group_by':'emp_name'}" /> 
                        <filter name="group_by_designation" string="Designation" context="{'group_by':'designation'}" />
                        <filter name="group_by_department" string="Department" context="{'group_by':'department'}" />
                        <filter name="group_by_bio_id" string="Biometric ID" context="{'group_by':'bio_id'}"/>
                        <!-- <filter name="group_by_login_date" string="Login Date" context="{'group_by':'login_date'}"/> -->

                    </group>   
                </search>
            </field>
        </record>
        
        <record id="action_kw_attendance_bio_reports_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Card Swipe Report</field>
            <field name="res_model">kw_attendance_bio_report</field>
            <field name="view_mode">tree,pivot</field>
        <!--  <field name="view_type">form</field> -->
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_today_bio_attendance':1,'create':False,'edit':False}</field>
            <field name="search_view_id" ref="view_kw_attendance_bio_report_search" />       
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>
        
    </data>
</odoo>