<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_attendance_employee_wise_paycut_report_form" model="ir.ui.view">
            <field name="name">Employee Wise Paycut Report Form View</field>
            <field name="model">kw_attendance_employee_wise_paycut_report</field>
            <field name="arch" type="xml">
                <form string="Employee Wise Paycut Report" create="false" import="false" delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="emp_name" />
                                <field name="department" />
                                <field name="designation" />
                                <!-- <field name="branch" /> -->
                            </group>
                            <group>
                                <field name="attendance_month" />
                                <field name="attendance_year" />
                                <field name="date_of_joining" />

                                <field name="first_half_absent" />
                                <field name="second_half_absent" />
                                <field name="full_day_absent"/>
                                <field name="total_absent"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_attendance_employee_wise_paycut_report_tree" model="ir.ui.view">
            <field name="name">Employee Wise Paycut Report Tree View</field>
            <field name="model">kw_attendance_employee_wise_paycut_report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Wise Paycut Report" create="false" import="false" delete="false">
                    <field name="emp_name" />
                    <field name="designation" />
                    <field name="department" />
                    <field name="branch_id" />
                    <field name="date_of_joining" />
                    <field name="last_working_day" />
                    <!-- <field name="attendance_month" /> -->
                    <!-- <field name="attendance_year" /> -->
                    <field name="first_half_absent" />
                    <field name="second_half_absent" />
                    <field name="full_day_absent"/>
                    <field name="total_absent"/>
                    <button name="view_details" type="object" string="View Details" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <record id="kw_attendance_employee_wise_paycut_report_search" model="ir.ui.view">
            <field name="name">Employee Wise Paycut Report Search View</field>
            <field name="model">kw_attendance_employee_wise_paycut_report</field>
            <field name="arch" type="xml">
                <search string="Search Employee">
                        <field name="employee_id" string="Employee" />
                        <field name="attendance_year" string="Year" />
                        <field name="branch_id" string="Branch"/>
                        <field name="department" string="Department" />

                        <filter string="This Year" domain="[('attendance_year', '=',context_today().strftime('%Y'))]" name="current_year_attendance"/>
                        <filter string="Last Year" domain="[('attendance_year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_attendance"/>  
                        <separator/>
                        <filter string="This month" domain="[('attendance_month_year','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('attendance_month_year','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01'))]" name="current_month_attendance"/>
                        
                        <filter string="Last Month" domain="[('attendance_month_year','&gt;',(context_today()-relativedelta(months=2)).strftime('%Y-%m-01')),('attendance_month_year','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_attendance"/>
                        <separator/>
                        <filter string="January" domain="[('attendance_month','=','01')]" name="january_attendance"/>
                        <filter string="February" domain="[('attendance_month','=','02')]" name="february_attendance"/>
                        <filter string="March" domain="[('attendance_month','=','03')]" name="march_attendance"/>
                        <filter string="April" domain="[('attendance_month','=','04')]" name="april_attendance"/>
                        <filter string="May" domain="[('attendance_month','=','05')]" name="may_attendance"/>
                        <filter string="June" domain="[('attendance_month','=','06')]" name="june_attendance"/>
                        <filter string="July" domain="[('attendance_month','=','07')]" name="july_attendance"/>
                        <filter string="August" domain="[('attendance_month','=','08')]" name="august_attendance"/>
                        <filter string="September" domain="[('attendance_month','=','09')]" name="september_attendance"/>
                        <filter string="October" domain="[('attendance_month','=','10')]" name="october_attendance"/>
                        <filter string="November" domain="[('attendance_month','=','11')]" name="november_attendance"/>
                        <filter string="December" domain="[('attendance_month','=','12')]" name="december_attendance"/>

                        <group>
                            <filter name="group_by_employee_id" string="Employee" context="{'group_by':'employee_id'}" />
                            <filter name="group_by_branch_id" string="Branch" context="{'group_by':'branch_id'}" />
                            <!-- <filter name="group_by_department" string="Department" context="{'group_by':'department'}" /> -->
                        </group>
            </search>
            </field>
        </record>

        <record id="action_kw_attendance_employee_wise_paycut_report_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Wise Paycut Report</field>
            <field name="res_model">kw_attendance_employee_wise_paycut_report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_current_year_attendance':1,'search_default_current_month_attendance':1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_attendance_employee_wise_paycut_report_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_attendance_employee_wise_paycut_report_form')})]"/>
            <field name="search_view_id" ref="kw_attendance_employee_wise_paycut_report_search"/>
           <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>

    </data>
</odoo>
