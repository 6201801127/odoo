<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_employee_attendance_summary_report_tree" model="ir.ui.view">
            <field name="name">view.kw_employee_attendance_summary_report.tree</field>
            <field name="model">kw_employee_attendance_summary_report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="kw_employee_attendance_summary_report_tree" create="false" edit="false" delete="false" import="false" default_order="attendance_year desc,month_number desc,employee_id asc">
                    <!-- <field name="attendance_year" string="Year"/> -->
                    <field name="attendance_month" string="Month"/>
                    <!-- <field name="month_number" string="Month No"/> -->
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="branch_id" string="Branch"/>
                    <field name="working_days"/>
                    <field name="present_state" />
                    <field name="absent_state" />
                    <field name="on_leave_state" />
                    <field name="on_tour_state"  />
                </tree>
            </field>
        </record>

        <record id="view_kw_employee_attendance_summary_report_form" model="ir.ui.view">
            <field name="name">view.kw_employee_attendance_summary_report.search</field>
            <field name="model">kw_employee_attendance_summary_report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="kw_attendance_report_form" create="false" delete="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" />
                                <field name="reporting_authority" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" />
                            </group>
                            <group>
                                <field name="attendance_year" string="Year"/>
                                <field name="attendance_month" string="Month"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="All" modifiers="{}">
                                <field name="monthly_attendance_child_ids" nolabel='1'>
                                    <tree >
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_name" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Check In" />
                                        <field name="lunch_in_time" />
                                        <field name="lunch_out_time" />
                                        <field name="check_out_time" string="Check Out" />
                                        <field name="status" />                                        
                                        <field name="late_entry_reason" />
                                        <field name="le_authority_remark" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Present" modifiers="{}">
                                <field name="present_child_ids" nolabel='1'>
                                    <tree >
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_name" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Check In" />
                                        <field name="lunch_in_time" />
                                        <field name="lunch_out_time" />
                                        <field name="check_out_time" string="Check Out" />
                                        <field name="status" />
                                        <!-- <field name="payroll_day_value" groups="base.group_no_one" string="Payroll Status" /> -->
                                        <field name="late_entry_reason" />
                                        <field name="le_authority_remark" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Absent" modifiers="{}">
                                <field name="absent_child_ids" nolabel='1'>
                                    <tree >
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_name" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Check In" />
                                        <field name="lunch_in_time" />
                                        <field name="lunch_out_time" />
                                        <field name="check_out_time" string="Check Out" />
                                        <field name="status" />
                                        <field name="late_entry_reason" />
                                        <field name="le_authority_remark" />
                                    </tree>
                                </field>
                            </page>
                            <page string="On Leave" modifiers="{}">
                                <field name="on_leave_child_ids" nolabel='1'>
                                    <tree >
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_name" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Check In" />
                                        <field name="lunch_in_time" />
                                        <field name="lunch_out_time" />
                                        <field name="check_out_time" string="Check Out" />
                                        <field name="status" />
                                        <field name="late_entry_reason" />
                                        <field name="le_authority_remark" />
                                    </tree>
                                </field>
                            </page>
                            <page string="On Tour" modifiers="{}">
                                <field name="on_tour_child_ids" nolabel='1'>
                                    <tree >
                                        <field name="attendance_recorded_date" string="Date" />
                                        <field name="shift_name" />
                                        <field name="shift_in" string="Office In Time"/>
                                        <field name="check_in_time" string="Check In" />
                                        <field name="lunch_in_time" />
                                        <field name="lunch_out_time" />
                                        <field name="check_out_time" string="Check Out" />
                                        <field name="status" />
                                        <field name="late_entry_reason" />
                                        <field name="le_authority_remark" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_kw_employee_attendance_summary_report_search" model="ir.ui.view">
            <field name="name">view.kw_employee_attendance_summary_report.search</field>
            <field name="model">kw_employee_attendance_summary_report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="kw_employee_attendance_summary_report_search">
                    <field name="employee_id" string="Employee" />
                    <field name="attendance_year" string="Year" />
                    <field name="branch_id" string="Branch"/>
                    <field name="department_id" string="Department" />

                    <!-- <field name="month_index" string="Branch"/> -->
                    <filter string="This Year" domain="[('attendance_year', '=',context_today().strftime('%Y'))]" name="current_year_attendance"/>
                    <filter string="Last Year" domain="[('attendance_year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_attendance"/>  
                    <separator/>

                    <filter string="This Month" domain="[('month_number','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('month_number','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01'))]" name="current_month_attendance"/>
              
                    <filter string="Last Month" domain="[('month_number','&gt;',(context_today()-relativedelta(months=2)).strftime('%Y-%m-01')),('month_number','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_attendance"/>
                    <separator/>
                    
                    <filter string="January" domain="[('month_index','=',1)]" name="january_attendance"/>
                    <filter string="February" domain="[('month_index','=',2)]" name="february_attendance"/>
                    <filter string="March" domain="[('month_index','=',3)]" name="march_attendance"/>
                    <filter string="April" domain="[('month_index','=',4)]" name="april_attendance"/>
                    <filter string="May" domain="[('month_index','=',5)]" name="may_attendance"/>
                    <filter string="June" domain="[('month_index','=',6)]" name="june_attendance"/>
                    <filter string="July" domain="[('month_index','=',7)]" name="july_attendance"/>
                    <filter string="August" domain="[('month_index','=',8)]" name="august_attendance"/>
                    <filter string="September" domain="[('month_index','=',9)]" name="september_attendance"/>
                    <filter string="October" domain="[('month_index','=',10)]" name="october_attendance"/>
                    <filter string="November" domain="[('month_index','=',11)]" name="november_attendance"/>
                    <filter string="December" domain="[('month_index','=',12)]" name="december_attendance"/>
                    <separator/>
                    <filter name="my_and_sub_ordinate_summary" string="My &amp; Sub-Ordinates" domain="['|',('employee_id.user_id','=',uid),('employee_id.parent_id.user_id','=',uid)]" />
                    
                    <group>
                        <filter name="group_by_employee_id" string="Employee" context="{'group_by':'employee_id'}" /> 
                        <filter name="group_by_branch_id" string="Branch" context="{'group_by':'branch_id'}" />
                        <filter name="group_by_department" string="Department" context="{'group_by':'department_id'}" />
                                               
                    </group>
                </search>
            </field>
        </record>

