        <!-- Main window action for "model" -->
        <record id="action_kw_employee_attendance_summary_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Attendance Summary Report</field>
            <field name="res_model">kw_employee_attendance_summary_report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_current_year_attendance':1,'search_default_current_month_attendance':1}</field>
            <!-- <field name="context">{'search_default_current_month_attendance':1,'search_default_my_and_sub_ordinate_summary':1}</field> -->
            <field name="search_view_id" ref="view_kw_employee_attendance_summary_report_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>

        <record id="view_kw_monthly_attendance_form" model="ir.ui.view">
            <field name="name">view.kw_monthly_attendance.form</field>
            <field name="model">kw_employee_attendance_summary_report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Monthly Attenandance" create="false" delete="false" edit="false" import="false">
                    <sheet>
                        <group string="Present"></group>
                        <field name="employee_id" invisible="1" />
                        <field name="present_child_ids">
                            <tree>
                                <field name="attendance_recorded_date" />
                                <field name="check_in_time" />
                                <field name="check_out_time" />
                                <field name="check_in_status"/>
                                <field name="check_out_status"/>
                            </tree>
                        </field>
                        <group string="Absent"></group>
                        <field name="absent_child_ids" invisible="context.get('present',False)">
                            <tree>
                                <field name="attendance_recorded_date" />
                                <field name="check_in_time" />
                                <field name="check_out_time" />
                                <field name="check_in_status"/>
                                <field name="check_out_status"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_kw_employee_monthly_attendance_summary_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Monthly Attendance Summary Report</field>
            <field name="res_model">kw_employee_attendance_summary_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context"></field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_kw_monthly_attendance_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>
    </data>
</odoo>
