<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_late_entry_reason_wizard_form" model="ir.ui.view">
            <field name="name">Late Entry Reason</field>
            <field name="model">kw_late_entry_reason_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>
                        <group>
                            <group>
                                <field name="late_entries_id" invisible='1'/>
                                <field name="late_entry_reason" style="height: 30px;resize: none;"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="submit_reason"  type="object" class="btn btn-success btn-lg">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="kw_late_entry_reason_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Late Entry Reason</field>
            <field name="res_model">kw_late_entry_reason_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="src_model">kw_late_attendance_summary_report</field>
            <field name="view_id" ref="kw_late_entry_reason_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>