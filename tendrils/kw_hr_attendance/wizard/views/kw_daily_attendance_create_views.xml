<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_kw_daily_attendance_create_wizard" model="ir.ui.view">
            <field name="name">kw_daily_attendance_create form</field>
            <field name="model">kw_daily_attendance_create</field>
            <field name="arch" type="xml">
                <form string="Create Daily Attendance">
                     <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>     
                        <group>
                            <group>
                                <field name="date" required="1"/>
                                <field name="to_date" required="1"/>
                            </group>
                        </group>
                        
                    </sheet>
                    <footer>
                        <button name="create_attendance_by_date" string="Create Attendance"
                                    type="object" class="oe_highlight"
                                    icon="fa-plus"/>
                        <button name="update_attendance_by_date" string="Update Attendance"
                                    type="object" class="oe_highlight"
                                    icon="fa-refresh"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/> 
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_daily_attendance_create_wizard" model="ir.actions.act_window">
            <field name="name">Create Daily Attendance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_daily_attendance_create</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kw_daily_attendance_create_wizard"/>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_daily_attendance_create"
                  name="Create Daily Attendance"
                  action="action_daily_attendance_create_wizard"
                  parent="hr_attendance.menu_hr_attendance_settings"
                  sequence="99" groups="base.group_no_one"/>
       
    </data>
</odoo>