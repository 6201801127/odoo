<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_employee_attandance_mode_assignment_search" model="ir.ui.view">
            <field name="name">view.view_kw_employee_attandance_mode_assignment.search</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Employee Name"/>
                    <field name="job_id" />
                    <field name="department_id" />
                    <field name="division" />
                    <field name="section" />
                    <field name="practise" />
                    <field name="resource_calendar_id" string="Shift" />
                    <field name="attendance_mode_ids" />
                    <separator/>
                    <filter name="emp_portal_mode" string="Only Portal" domain="[('attendance_mode_ids','!=',False),('attendance_mode_ids','not ilike','manual'),('attendance_mode_ids','not ilike','bio'),('attendance_mode_ids','ilike','portal')]" />
                    <filter name="emp_manual_mode" string="Only Manual" domain="[('attendance_mode_ids','!=',False),('attendance_mode_ids','not ilike','portal'),('attendance_mode_ids','not ilike','bio'),('attendance_mode_ids','ilike','manual')]" />
                    <filter name="emp_bio_metric_mode" string="Only Bio-Metric" domain="[('attendance_mode_ids','!=',False),('attendance_mode_ids','not ilike','portal'),('attendance_mode_ids','not ilike','manual'),('attendance_mode_ids','ilike','bio')]" />
                    <filter name="emp_portal_bio_metric_mode" string="Portal + Bio-Metric" domain="[('attendance_mode_ids','!=',False),('attendance_mode_ids','not ilike','manual'),('attendance_mode_ids','ilike','portal'),('attendance_mode_ids','ilike','bio')]" />
                    <filter name="emp_no_attendance_mode" string="No Attendance" domain="[('no_attendance','=',True)]" />
                </search>
            </field>
        </record>

        <record id="view_kw_attendance_mode_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_attendance_mode_wizard.form</field>
            <field name="model">kw_attendance_mode_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="kw_attendance_mode_form" create="true" delete="true" edit="true">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="branch_id" required="1" options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>
                            <!-- <field name="department" widget="many2many_tags" /> -->
                            <field name="employee_id" required="1" options="{'no_create_edit': True, 'no_create': True}" 
                                    context="{'tree_view_ref': 'kw_hr_attendance.view_kw_employee_shift_assignment_tree',
                                    'search_view_ref':'kw_hr_attendance.view_kw_employee_attandance_mode_assignment_search'}">
                                <tree>
                                    <field name="name" />
                                    <field name="emp_code" />
                                    <field name="department_id" />
                                    <field name="job_id" />
                                    <field name="attendance_mode" string="Attendance Mode" />
                                </tree>
                            </field>
                            <field name="no_attendance" />
                            <field name="attendance_mode" widget="many2many_tags" attrs="{'invisible': [('no_attendance','=',True)]}" options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_kw_attendance_mode_wizard" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Attendance Mode Assignment</field>
            <field name="res_model">kw_attendance_mode_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>
