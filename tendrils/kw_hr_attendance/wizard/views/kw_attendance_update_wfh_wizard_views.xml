<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_kw_attendance_update_wfh_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_attendance_update_wfh_wizard.form</field>
            <field name="model">kw_attendance_update_wfh_wizard</field>
            <field name="arch" type="xml">
                <form string="Update WFH Status">
                     <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>

                    <footer class="text-center">
                        <button name="update_wfh_status" string="Update"
                                    type="object" class="oe_highlight"
                                    icon="fa-refresh"/>

                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>


        <record id="action_kw_attendance_update_wfh_wizard" model="ir.actions.act_window">
            <field name="name">Update WFH Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_attendance_update_wfh_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kw_attendance_update_wfh_wizard_form"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_view_kw_attendance_update_wfh_wizard"
                  name="Update WFH Status"
                  action="action_kw_attendance_update_wfh_wizard"
                  parent="hr_attendance.menu_hr_attendance_settings"
                  sequence="31" groups="hr_attendance.group_hr_attendance_manager"/>

    </data>
</odoo>