<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_manual_attendance_hr_wizard_form" model="ir.ui.view">
            <field name="name">HR Manual Attendance Wizard.form</field>
            <field name="model">kw_manual_attendance_hr_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="HR Manual Attendance Wizard" >
                  
                    <sheet>                        
                        <group>
                            <group>
                                <field name="from_date" autocomplete="off" options="{'datepicker':{'maxDate': 'now'}}" />
                            </group>
                            <group>
                                <field name="to_date" autocomplete="off" options="{'datepicker':{'maxDate': 'now'}}" />
                            </group>
                            
                        </group>

                        <!-- <group>
                            <field name="branch_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                                        
                        </group> -->

                        <button string='Generate Daywise Attendance'  name="generate_attendance" type="object"  class="btn-warning" />
                        <separator />
                       
                        <field name="emp_date_ids"  widget="x2many_2d_matrix" field_x_axis="attendance_date" field_y_axis="employee_id" field_value="present_status" >
                            <tree>
                                <field name="attendance_date"/>
                                <field name="employee_id"/>
                                <field name="present_status"/>
                            </tree>
                        </field>

                        <group>
                            <button string='Create Manual Attendance'  name="create_manual_attendance" type="object" class="btn-primary"  confirm="Are you sure you want to create the manual attendance of the selected employee(s) ?" />
                        </group>
                        
                        
                    </sheet>

                    <!-- <footer>                       
                        <button string='Create Manual Attendance'  name="create_manual_attendance" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel"/>                        
                    </footer> -->
                </form>
            </field>
        </record>

               
        <record id="action_kw_manual_attendance_hr_wizard" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Manual Attendance</field>
            <field name="res_model">kw_manual_attendance_hr_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>
        
    </data>
</odoo>
