<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_shift_weekoff_assign_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_shift_weekoff_assign_wizard.form</field>
            <field name="model">kw_shift_weekoff_assign_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Weekoff Assignment" create="true" delete="true" edit="true">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <field name="branch_id" widget='many2many_tags' options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>
                            <field name="shift_ids" required="1" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"  domain="[('employee_id','=',False)]">
                                <tree>
                                    <field name="name" />
                                </tree>
                            </field>
                            
                           <!--  <field name="week_off_day" required="1"/> -->
                        </group>
                        <group>
                            <field name="start_date" required="1" autocomplete="off"/>
                            <field name="end_date" required="1" autocomplete="off"/>
                            
                        </group> 
                     
                        <group>
                            <field name="rrule_type" required="1"/>
                            <field name="rrule" invisible="1"/>
                        </group>
                        <group  attrs="{'invisible': [('rrule_type', '!=', 'weekly')] }" name="weekdays">
                            <field name="mo" />
                            <field name="tu" />
                            <field name="we" />
                            <field name="th" />
                            <field name="fr" />
                            <field name="sa"  />
                            <field name="su" />
                        </group>

                            <group attrs="{'invisible': [('rrule_type', '!=', 'monthly')] }" name="weekdays">
                            <label string="Day of Month" for="month_by"/>
                            <div class="o_row">
                                <field name="month_by" />
                                <field name="day"
                                    attrs="{'required': [('month_by', '=', 'date'), ('rrule_type', '=', 'monthly')],
                                            'invisible': [('month_by', '!=', 'date')]}"/>
                                <field name="byday" string="The"
                                    attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],
                                            'invisible': [('month_by', '!=', 'day')]}"/>
                                <field name="week_list" nolabel="1"
                                    attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],
                                            'invisible': [('month_by', '!=', 'day')]}"/>
                            </div>
                            </group>

                           
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_shift_weekoff_assign_wizard" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Shift Week Off Assignment</field>
            <field name="res_model">kw_shift_weekoff_assign_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>




    </data>
</odoo>
