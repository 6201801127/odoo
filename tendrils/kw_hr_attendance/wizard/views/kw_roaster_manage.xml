<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_roaster_manage_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_roaster_manage.form</field>
            <field name="model">kw_roaster_manage_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="group_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <field name="employee_id" widget="many2many_tags" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <group>
                                <field name="from_date" autocomplete="off"/>
                            </group>
                            <group>
                                <field name="to_date" autocomplete="off"/>
                            </group>
                        </group>
                        <group string="Set Day Off">
                            <field name="emp_roaster_id" nolabel='1'>
                                <tree editable="bottom" create='false' delete='false'>
                                    <field name="employee_id" domain="[('id','in',[employee_id])]" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="sun"/>
                                    <field name="mon"/>
                                    <field name="tue"/>
                                    <field name="wed"/>
                                    <field name="thu"/>
                                    <field name="fri"/>
                                    <field name="sat"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_roaster_assignment_wizard" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Roster Assignment</field>
            <field name="res_model">kw_roaster_manage_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
