<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_shift_holiday_assignment_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_shift_holidays_wizard.form</field>
            <field name="model">kw_shift_holidays_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Holiday Assignment" create="true" delete="true" edit="true">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            
                            <field name="branch_id" required="1" options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>
                            <field name="public_holiday_id" required="1" options="{'no_open': True,'no_create':True,'no_create_edit': True}"/>

                            <field name="shift_holidays_ids" required="1" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" domain="[('year_id','=',public_holiday_id)]">
                                <tree>                                  
                                    <field name="date" />                             
                                    <field name="name" />
                                   <!--  <field name="optional_holiday" /> -->
                                </tree>
                            </field>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        
        <record id="action_kw_shift_holidays_assignment_wizard" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Branch Holiday Assignment</field>
            <field name="res_model">kw_shift_holidays_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
        


        
    </data>
</odoo>
