<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_attendance_employee_wise_paycut_take_action_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_attendance_employee_wise_paycut_take_action.form</field>
            <field name="model">kw_attendance_employee_wise_paycut_take_action</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Take Action" >                  
                    <sheet>                     
                        <group >
                            <field invisible="1" name="paycut_attendance_ids" string="Attendance Paycuts" readonly="1">
                                <tree default_order="id desc" >
                                    <field name="emp_name" />                                    
                                    <field name="attendance_month"/>
                                    <field name="attendance_year"/>
                                </tree> 
                            </field>
                            
                        </group>
                        <p>This will manually update the office-in and office-out time of the selected employee's attendance record as per the configured shift-in and shift-out time . 
                            <br/> <b>Click on the Update button if you are sure to proceed .</b></p>
                        <separator />
                        <group>                           
                            <field name="remark" string="Remark"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Update'  name="update_attendance_details" type="object" 
                        class="btn font-weight-bold text-white" style="background-color: #108fbb;" />
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <act_window id="action_attendance_employee_wise_paycut_take_action_wizard"
                name="Update Attendance"
                src_model="kw_attendance_employee_wise_paycut_report"
                res_model="kw_attendance_employee_wise_paycut_take_action"
                view_type="form" view_mode="form"
                key2="client_action_multi" target="new"/>
        
    </data>
</odoo>