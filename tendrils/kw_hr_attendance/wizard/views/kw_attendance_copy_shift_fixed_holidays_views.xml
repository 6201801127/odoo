<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_attendance_copy_shift_fixed_holidays_form" model="ir.ui.view">
            <field name="name">view.kw_attendance_copy_shift_fixed_holidays.form</field>
            <field name="model">kw_attendance_copy_shift_fixed_holidays</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Copy Shift Fixed Holidays" style="padding-bottom:0;">
                    <sheet>
                        <group>
                            <field name="year"/>
                            <field name="branch_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <field name="shift_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                            domain="[('branch_id','=',branch_id),('employee_id','=',False)]"/>

                            <field name ="copy_shift_id" 
                            options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                            domain="[('employee_id','=',False)]"/>
                            <field name ="global_leave_ids" domain="[('calendar_id','=',shift_id),('holiday_type','=','2')]">
                                <tree create="0">
                                    <field name="start_date" string="Date"/>
                                    <field name="name"/>
                                    <field name="holiday_type"/>
                                </tree>
                            </field>

                            <field name="excluded_public_holidays_ids">
                                <tree create="0">
                                    <field name="name"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </group>
                        
                    </sheet>
                    <footer>
                        <button string='Copy' name="create_shift_with_fixed_holidays" 
                        type="object" class="btn font-weight-bold text-white" 
                        style="background-color: #108fbb;"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="kw_attendance_copy_shift_fixed_holidays_act_window" model="ir.actions.act_window">
            <field name="name">Copy Shift FIxed Holidays</field>
            <field name="res_model">kw_attendance_copy_shift_fixed_holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kw_attendance_copy_shift_fixed_holidays_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
