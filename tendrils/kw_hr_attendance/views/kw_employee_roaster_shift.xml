<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_employee_roaster_shift_tree" model="ir.ui.view">
            <field name="name">view.kw_employee_roaster_shift.tree</field>
            <field name="model">kw_employee_roaster_shift</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="kw_employee_roaster_shift_tree" create="false" edit="false" delete="false" import="false">
                    <field name="employee_id" string="Employee" />
                    <field name="date" />
                    <field name="shift_id" string="Shift Name" />
                    <field name="week_off_status" />
                </tree>
            </field>
        </record>

        <record id="view_kw_employee_roaster_shift_form" model="ir.ui.view">
            <field name="name">view.kw_employee_roaster_shift.form</field>
            <field name="model">kw_employee_roaster_shift</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="kw_employee_roaster_shift_form" create="true" edit="true">
                   
                    <sheet>
                        <group>
                            <field name="enable_edit" invisible="1"/>
                            <field name="employee_id" string="Employee" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" attrs="{'readonly': [('enable_edit','=',False)]}" />
                            <field name="date" autocomplete="off" attrs="{'readonly': [('enable_edit','=',False)]}" />
                            <field name="shift_id" string="Shift Name" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"  domain="[('employee_id','=',False)]" attrs="{'readonly': [('enable_edit','=',False)]}" />
                            <field name="week_off_status" attrs="{'readonly': [('enable_edit','=',False)]}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- model.name search view -->
        <record id="view_kw_employee_roaster_shift_search" model="ir.ui.view">
            <field name="name">view.kw_employee_roaster_shift.search</field>
            <field name="model">kw_employee_roaster_shift</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="employee_id" string="Employee"/>
                    <field name="branch_id" />
                    <filter string="Roster Shift Date" name="filter_roaster_date" date="date"/>
                    <filter string="Upcoming Roster Shifts" name="filter_today_onwards_roaster_day" domain="[('date', '>=',context_today().strftime('%Y-%m-%d'))]" />
                    <filter string="Past Roster Shifts" name="filter_past_roaster_day" domain="[('date','&lt;',context_today().strftime('%Y-%m-%d'))]" />
                    <group expand="0" string="Group By">
                        <filter string="Branch" name="group_by_branch_id" context="{'group_by':'branch_id'}" />
                        <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Date" name="date" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_kw_employee_roaster_shift_pivot" model="ir.ui.view">
            <field name="name">view.kw_employee_roaster_shift.pivot</field>
            <field name="model">kw_employee_roaster_shift</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <field name="employee_id" type="col"/>
                    <field name="date" interval="day" type="row"/>
                    <field name="week_off_status" type="col"/>
                    <field name="week_off_status" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_kw_employee_roaster_shift_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Roster Shift</field>
            <field name="res_model">kw_employee_roaster_shift</field>
            <field name="view_mode">tree,pivot,form</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_filter_today_onwards_roaster_day":1,"create": False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>

        </record>
    </data>
</odoo>
