<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_flexi_shift_apply_email_template" model="mail.template">
            <field name="name">Flexi Shift Applied Template</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="subject">Flexi Time Request | Applied | ${ctx['emp_name']}(${ctx['emp_code']})</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['mail_cc']}</field>
            <field name="model_id" ref="kw_hr_attendance.model_resource_calendar"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                %for rec in ctx['record']:
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${rec.employee_id.parent_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Flexi Time Approval Request has been applied by ${ctx['emp_name']}(${ctx['emp_code']}).
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Date From
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(rec['start_date'],format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Date To
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(rec['end_date'],format='%d-%b-%Y')}
                                            
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Flexi Hours
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${rec['select_flexi_hrs']}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Reason
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${rec['flexi_reason']}
                                        </td>
                                    </tr>
                                    %endfor
                                </table>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to take action.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
