<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_late_entry_forwaded_email_template" model="mail.template">
            <field name="name">Late Entry Forwarded Template</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Late Entry Request | Forwarded</field>
            <field name="email_to">${object.le_forward_to.work_email}</field>
            <field name="email_cc">${object.employee_id.work_email}</field>
            <field name="model_id" ref="kw_hr_attendance.model_kw_daily_employee_attendance"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.le_forward_to.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        ${object.le_action_taken_by.name} has forwarded ${object.employee_id.name}'s Late Entry Approval Request for ${format_tz(object.attendance_recorded_date, format='%d-%b-%Y')}.
                                    </p>
                                </div>
                               
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Applied Date
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                             ${format_tz(object.attendance_recorded_date, format='%d-%b-%Y')} 
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Office In Time
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.shift_in}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            LogIn Time
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.check_in_time}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Reason
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.late_entry_reason}
                                        </td>
                                    </tr>
                                </table>

                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Forwarded By
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.le_action_taken_by.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Forwarded On
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.write_date, format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Application Status
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${dict(object.fields_get(allfields=['le_state'])['le_state']['selection'])[object.le_state]}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Remark
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.le_forward_reason}
                                        </td>
                                    </tr>
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to view details and take action.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>