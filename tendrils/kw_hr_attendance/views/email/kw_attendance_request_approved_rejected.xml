<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_attendance_request_approved_email_template" model="mail.template">
            <field name="name">Attendance Request Approved Template</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Attendance Request Approved for ${format_tz(object.attendance_date, format="%d-%b-%Y")}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="email_cc">${(object.employee_id.coach_id.work_email if object.employee_id and object.employee_id.coach_id and object.employee_id.coach_id.parent_id else ''|safe)}</field>
            <field name="model_id" ref="kw_hr_attendance.model_kw_employee_apply_attendance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.employee_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        ${object.action_taken_by.name} has approved the update attendance request for ${format_tz(object.attendance_date, format="%d-%b-%Y")}.
                                    </p>
                                </div>
                               
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Action Taken On
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.action_taken_on, format="%d-%b-%Y")}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Remark
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.authority_remark}
                                        </td>
                                    </tr>
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>

        <record id="kw_attendance_request_rejected_email_template" model="mail.template">
            <field name="name">Attendance Request Rejected Template</field>
            <field name="email_from"></field>
            <field name="subject">Attendance Request Rejected for ${format_tz(object.attendance_date, format="%d-%b-%Y")}</field>
