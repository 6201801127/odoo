<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_pending_late_entry_approval_email_template" model="mail.template">
            <field name="name">Pending Late Entry Approval Template</field>
            <field name="email_from">${object.employee_id.company_id and object.employee_id.company_id.email or ''}</field>
            <field name="subject">Late Entry Approval for the Month of ${format_tz(datetime.datetime.today().date(), format="%B")} ${format_tz(datetime.datetime.today().date(), format="%Y")} | Pending</field>
            <field name="email_to">${ctx['to_mail']}</field>
            <!-- <field name="email_cc">${ctx['cc_list'] | safe}</field> -->
            <field name="model_id" ref="kw_hr_attendance.model_kw_daily_employee_attendance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['emp_name']},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        The following late entry requests are pending for approval, as on ${format_tz(datetime.datetime.today().date(), format="%d-%b-%Y")}.
                                    </p>
                                </div>
                               
                                <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem;">
                                    <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Sl.No. </th>
                                    <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Name </th>
                                    <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Late Entry Date </th>

                                    % for record in ctx['emp_request_list']:
                                        
                                        <tr>
                                            <td style="color:#676767;padding-left: 5px;height: 34px;width:10%;" >
                                                ${loop.index}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;"  >
                                                ${record.employee_id.name}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%" >
                                                ${format_tz(record.attendance_recorded_date, format="%d-%b-%Y")}
                                            </td>
                                        </tr>
                                        
                                    % endfor

                                </table>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please log into Tendrils and take action against above pending late entries on or before ${format_tz(datetime.datetime.today().date() + relativedelta(day=26), format="%d-%b-%Y")}, otherwise system will calculate those day(s) as LWOP.
                                        <br/>
                                        Please ignore the mail if you have already approved the late entries.
                                    </p>
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>------------------------------------------------------------------<br/>
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>