<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_roster_assign_email_template" model="mail.template">
            <field name="name">Roster Assignment Email Template</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
             <field name="subject">Roster Shift Assigned | ${ctx['employee_name']}</field>
            <field name="email_to">${ctx['employee_email']}</field>
            <field name="email_cc">${ctx['employee_ra_email']}</field>
            <field name="model_id" ref="kw_hr_attendance.model_kw_roaster_manage_wizard"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['employee_name']},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        You have assigned for roster shift from ${ctx['from_date']} to ${ctx['to_date']}.
                                    </p>
                                </div>
                               <div style="margin-left: 1.2rem;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        These following days will be week off for you in this period.
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <th style="padding-left:20px; font-weight:700;color:#676767;text-align:left;"> Sl.No. </th>
                                    <th style="font-weight:700;color:#676767;text-align:left;"> Week Days </th>

                                    % for record in ctx['day_list']:
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                ${loop.index}.
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${record}
                                            </td>
                                        </tr>
                                    % endfor
                                </table>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please log into the Tendrils to see details.
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Note ::<br/>
                                        This is a system generated mail. Kindly do not reply to this mail.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>

        <record id="kw_roster_update_email_template" model="mail.template">
            <field name="name">Roster Update Email Template</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Roster Shift Update ${format_tz(object.date, format="%d-%b-%Y")}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="model_id" ref="kw_hr_attendance.model_kw_employee_roaster_shift"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.employee_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Your roster shift details has been modified.
                                    </p>
                                    <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;height: 34px;"width="150px">
                                                Date
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${format_tz(object.date, format="%d-%b-%Y")}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;height: 34px;"width="150px">
                                                Shift name
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${object.shift_id.name}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;height: 34px;"width="150px">
                                                Week Off
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                % if object.week_off_status:
                                                   Yes
                                                % else
                                                    No 
                                                % endif
                                            </td>
                                        </tr>
                                    </table>
                                    
                                </div>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please log into the Tendrils to see details.
                                    </p>
                                    
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>------------------------------------------------------------------<br/>
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>