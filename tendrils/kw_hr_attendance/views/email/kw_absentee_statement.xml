<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_absentee_statement_email_template" model="mail.template">
            <field name="name">Absentee Statement Template</field>
            <field name="email_from">${object.employee_id.company_id and object.employee_id.company_id.email or ''}</field>
            <field name="subject">Absentee Statement for the Month of ${format_tz(datetime.datetime.today().date(), format="%B")} ${format_tz(datetime.datetime.today().date(), format="%Y")}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="email_cc"></field>
            <field name="model_id" ref="kw_hr_attendance.model_kw_daily_employee_attendance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.employee_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        The following date/s are showing absent in Tendrils as on ${format_tz(datetime.datetime.today().date(), format="%d-%b-%Y")}.
                                    </p>
                                </div>
                                
                                <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem; ">
                                    <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Sl.No. </th>
                                    <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Absent Date </th>

                                    % for record in ctx['emp_request_list']:
                                        % if record.payroll_day_value < 1:
                                            <tr>
                                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:20%;" >
                                                    ${loop.index}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;" >
                                                    ${format_tz(record.attendance_recorded_date, format="%d-%b-%Y")}&nbsp;(${'Half Day' if record.payroll_day_value == 0.5 else 'Full Day'})
                                                </td>
                                                
                                            </tr>
                                        % endif
                                    % endfor
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        You are requested to log into Tendrils and settle the same by applying leave or tour before ${format_tz(datetime.datetime.today().date() + relativedelta(day=26), format="%d-%b-%Y")}, else system will not process salary for that particular day.
                                        <br/>
                                        Please ignore the mail if you have already applied leave or tour for those days.
                                    </p>
                                    
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>------------------------------------------------------------------<br/>
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>