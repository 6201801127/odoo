<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="kw_hr_attendance_approval_redirect" name="Attendance Approval">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="container">
                        <section class="service-request mt32">
                            <div class="container card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mx-auto">
                                            <div class="section_content text-center">
                                                <h3>
                                                    <t t-if="attendance_request">
                                                        <t t-if="attendance_request.state == '3'">Attendance Request approved successfully!</t>
                                                        <t t-if="attendance_request.state == '5'">Attendance Request rejected successfully!</t>
                                                    </t>
                                                    <t t-if="attendance_obj and attendance_obj.le_state == '2'">
                                                        <t t-if="attendance_obj.le_action_status == '1'">Late entry request approved with paycut!</t>
                                                        <t t-if="attendance_obj.le_action_status == '2'">Late entry request approved without paycut!</t>
                                                    </t>
                                                </h3>
                                                <br/>
                                                <!-- <a class="btn btn-secondary" style="background-color: #f7941d !important;" t-att-href="'ok'">
                                                        View Details
                                                        &amp;nbsp;
                                                    <i class="fa fa-arrow-circle-right "/>
                                                </a> -->
                                                <!-- t-att-href="'/web#id='+str(tour.id)+'&amp;action=kw_tour.action_kw_tour_view_all_act_window&amp;model=kw_tour&amp;view_type=form'" -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>

        <template id="kw_hr_attendance_approval_redirect_assets" inherit_id="kw_hr_attendance.kw_hr_attendance_approval_redirect">
            <xpath expr="." position="inside">
                <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css?v=12" rel="stylesheet"/>
                <script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js?v=12"/>
            </xpath>
        </template>
    </data>
</odoo>