<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_roaster_group_config_tree" model="ir.ui.view">
            <field name="name">view.kw_roaster_group_config.tree</field>
            <field name="model">kw_roaster_group_config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="kw_roaster_group_config_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                    <field name="group_head_id" />
                    <field name="group_member_ids" widget="many2many_tags" />
                </tree>
            </field>
        </record>

        <record id="view_kw_roaster_group_config_form" model="ir.ui.view">
            <field name="name">view.kw_roaster_group_config.form</field>
            <field name="model">kw_roaster_group_config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="kw_roaster_group_config_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"  placeholder="Group Name" string="Group Name" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="group_head_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="group_member_ids" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"  context="{'tree_view_ref': 'kw_hr_attendance.view_hr_employee_kw_roaster_group_config_tree'}">
                                    <tree>
                                        <field name="image_small" widget="image" string="Photo"/>
                                        <field name="name" />
                                        <field name="emp_code" />
                                        <field name="job_id" string="Designation" />
                                        <field name="department_id" />
                                        <field name="job_branch_id" string="Job Location"/>
                                        <field name="work_email" string="Email"/>
                                        <field name="mobile_phone" string="Mobile"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_kw_roaster_group_config_tree" model="ir.ui.view">
            <field name="name">view.hr.employee.kw_roaster_group_config.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
					<field name="job_branch_id"/>
                    <field name="work_email"/>
                    <field name="mobile_phone"/>
                    <field name="epbx_no"/>
                </tree>
            </field>
        </record>

        <record id="action_kw_roaster_group_config_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Roster Group Configuration</field>
            <field name="res_model">kw_roaster_group_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>
    </data>
</odoo>
