<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>      
        <!-- Tree view for "kw_bio_atd_request_response" -->
        <record id="view_kw_bio_atd_request_response_tree" model="ir.ui.view">
            <field name="name">view.kw_bio_atd_request_response.tree</field>
            <field name="model">kw_bio_atd_request_response</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_bio_atd_request_response_tree" create="false" delete="false" edit="false" import="false">
                    <field name="name" />
                    <field name="request_info" />
                    <field name="response" />
                    <field name="create_date" string="Date" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "kw_bio_atd_request_response" -->
        <record id="view_kw_bio_atd_request_response_form" model="ir.ui.view">
            <field name="name">view.kw_bio_atd_request_response.form</field>
            <field name="model">kw_bio_atd_request_response</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="kw_bio_atd_request_response_form" create="false" delete="false" edit="false">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="request_info" />
                            <field name="response" />
                            <field name="create_date" string="Date" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "kw_bio_atd_request_response" -->
        <record id="view_kw_bio_atd_request_response_search" model="ir.ui.view">
            <field name="name">view.kw_bio_atd_request_response.search</field>
            <field name="model">kw_bio_atd_request_response</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_bio_atd_request_response_search">
                    <field name="name" />
                    <filter string="Bio-Metric Request or Response Date" name="filter_bio_request_response_date" date="create_date"/>

                </search>
            </field>
        </record>
        
        <!-- Main window action for "kw_bio_atd_request_response" -->
        <record id="action_kw_bio_atd_request_response_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Bio Attendance Request and Response Log</field>
            <field name="res_model">kw_bio_atd_request_response</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_kw_bio_atd_request_response_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>
    </data>
</odoo>
