<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_resource_calendar_leaves_fixed_holidays_tree" model="ir.ui.view">
            <field name="name">view.resource.calendar.leaves.fixed_holidays.tree</field>
            <field name="model">resource.calendar.leaves</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree  string="Fixed Holidays" create="false" edit="false">
                    <!-- <field name="branch_id" /> -->
                    <field name="calendar_id" string="Shift" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="name" string="Holiday"/>
                    <field name="start_date" string="Date"/>
                    <field name="day"/>
                    <field name="holiday_type"/>
                </tree>
            </field>
        </record>

        <record id="view_resource_calendar_leaves_fixed_holidays_form" model="ir.ui.view">
            <field name="name">view.resource.calendar.leaves.fixed_holidays.form</field>
            <field name="model">resource.calendar.leaves</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Fixed Holidays" create="false" edit="false" duplicate="false">
                    <group>
                        <group>
                            <field name="calendar_id" string="Shift" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="name" string="Holiday"/>
                            <field name="start_date" string="Date"/>
                            <field name="day"/>
                            <field name="holiday_type"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_resource_calendar_leaves_fixed_holidays_search" model="ir.ui.view">
            <field name="name">view.resource_calendar_leaves_fixed_holidays.search</field>
            <field name="model">resource.calendar.leaves</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="Search Working Period Leaves">
                    <field name="name"/>
                    <field name="calendar_id" string="Shift"/>
                    <filter string="This Month" name="filter_current_month" 
                        domain="[('start_date', 'like',context_today().strftime('%Y-%m-%'))]" />
                    <group expand="0" string="Group By">
                        <filter string="Shift" name="shift" domain="[]" context="{'group_by':'calendar_id'}"/>
                        <!-- <filter string="Branch" name="branch" domain="[]" context="{'group_by':'branch_id'}"/> -->
                        <filter string="Leave Date" name="leave_month" domain="[]" context="{'group_by':'date_from'}" help="Starting Date of Leave"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_resource_calendar_leaves_fixed_holidays_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Fixed Holidays &amp; Week Offs</field>
            <field name="res_model">resource.calendar.leaves</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[('holiday_type','in',['1','2']),('resource_id','=',False)]</field>
            <field name="context">{'search_default_filter_current_month':1,'edit':False}</field>
            <field name="search_view_id" ref="view_resource_calendar_leaves_fixed_holidays_search" />
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_resource_calendar_leaves_fixed_holidays_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_resource_calendar_leaves_fixed_holidays_form')})]"/>
            <field name="help" type="html">
                <p>No fixed holidays found...</p>
            </field>
        </record>
        
    </data>
</odoo>
