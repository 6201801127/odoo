<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="view_hr_attendance_log_tree" model="ir.ui.view">
            <field name="name">hr.attendance attendance logs</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">                

                <field name="check_in" position="after" >
                  <field name="check_in_mode_display"/>
                  <field name="in_ip_address"/>
                </field>
                <field name="check_out" position="after" >
                  <field name="out_ip_address"/>
                  <field name="mode_enabled"  groups="base.group_no_one"/>
                  <!-- <button name="action_name" type="object" class="oe_stat_button" icon="fa-copy">
                     
                  </button> -->
                </field>
                
            </field>
        </record>

        <record id="view_hr_attendance_today_search" model="ir.ui.view">
            <field name="name">hr.attendance.search</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
            <field name="arch" type="xml">

                <search>            
                    <field name="branch_id" />       
                    <filter string="Today" name="filter_today_attendance" domain="[('check_in','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59))), ('check_in','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>                    
                    <group>
                        <filter name="group_by_branch_id" string="Branch" context="{'group_by':'branch_id'}" /> 
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
            <field name="name">Attendance Log Report</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_filter_today_attendance":1,"create": False,"edit": False,"import": False,"delete": False}</field>           
            <field name="domain">['|',('employee_id.user_id','=',uid),('employee_id.parent_id.user_id', '=',uid)]</field>
            <field name="search_view_id" ref="hr_attendance.hr_attendance_view_filter" />
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No attendance records found
                </p><p>
                    The attendance records of your employees will be displayed here.
                </p>
            </field>
        </record>

     </data>
</odoo>