<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.auth</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_attendance']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_kw_hr_attendance_status"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_kw_hr_attendance_status"/>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="late_entry_screen_enable" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="late_entry_screen_enable" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        
                    </div>
                    
                    <div class="col-12 col-lg-12 o_setting_box">                       
                        <div class="o_setting_right_pane">                           
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="attn_exclude_grade_ids" string="Exclude Grade for Late Entry"/>
                                    <field name="attn_exclude_grade_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-lg-12 o_setting_box">                       
                        <div class="o_setting_right_pane">                           
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="kwantify_atd_sync_url"/>
                                    <field name="kwantify_atd_sync_url" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <h2>Attendance Re-computation &amp; Reminder Mail </h2>
                <div class="row mt16 o_settings_container" name="file">
                    <div class="col-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="recompute_previous_month"/>
                                    <field name="recompute_previous_month"/>
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="recompute_start_day"/>
                                    <field name="recompute_start_day"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Reminder E-mails</span>
                            <div class="text-muted">
                                Define starting day of sending reminder mail for pending late entry &amp; absentee statements
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="reminder_mail_start_day"/>
                                    <field name="reminder_mail_start_day" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Resource Flexi Timing HR Core Team Mail Configuration </h2>
                <div class="row mt16 o_settings_container" name="file">
                    <div class="col-12 col-lg-12 o_setting_box">                       
                        <div class="o_setting_right_pane">                           
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="hr_core_team_ids" string="Core Team Members"/>
                                    <field name="hr_core_team_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>

            </xpath>
        </field>
    </record>

    <!-- <record id="kw_auth_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_hr_attendance'}</field>
    </record> -->
</odoo>
