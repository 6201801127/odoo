<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_kw_daily_employee_off_day_entry_list">
      <field name="name">Off Day Entries</field>
      <field name="model">kw_daily_employee_attendance</field>
      <field name="priority" eval='70'/>
      <field name="arch" type="xml">
        <tree> 
          <field name="employee_id"/>
          <field name="department_id" string="Department"/>
          <field name="branch_id" string="Branch"/>
          <field name="shift_name"/>
          <field name="attendance_recorded_date" string="Off Day Entry Date"/>
          <field name="check_in_time" string="Office In"/>
          <field name="check_out_time" string="Office Out"/>
          <field name="status"/>
          <button name="%(kw_hr_attendance.off_day_comp_off_apply_window_action)d" context="{'default_attendance_id': active_id,'default_employee_id': employee_id}" type="action" string="Apply" class=" oe_link" />
        </tree>
      </field>
    </record>   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="action_kw_daily_employee_off_day_entry_window">
      <field name="name">Off Day Entries</field>
      <field name="res_model">kw_daily_employee_attendance</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('employee_id.user_id','=',uid),('day_status','in',['2','4','5']),('state','in',['1','7','8'])]</field>
      <field name="context">{"create": False,"edit": False,"delete": False,"toolbar":False}</field>
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              No record found
          </p>
      </field>
    </record>
   
    <record id="action_my_off_day_entries_view_tree" model="ir.actions.act_window.view">
          <field name="view_mode">tree</field>
          <field name="view_id" ref="view_kw_daily_employee_off_day_entry_list"/>
          <field name="act_window_id" ref="action_kw_daily_employee_off_day_entry_window"/>
    </record>



  </data>
</odoo>