<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_attendance_quotes_view_form" model="ir.ui.view">
            <field name="name">Attendance Quotes Form View</field>
            <field name="model">kw_attendance_quotes</field>
            <field name="arch" type="xml">
                <form string="Quotes">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="monday" />
                                <field name="tuesday" />
                                <field name="wednesday" />
                                <field name="thursday" />
                                <field name="friday" />
                                <field name="saturday" />
                                <field name="sunday" />
                                <field name="from_date" autocomplete="off"/>
                                <field name="to_date" autocomplete="off"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_attendance_quotes_view_tree" model="ir.ui.view">
            <field name="name">Attendance Quotes Tree View</field>
            <field name="model">kw_attendance_quotes</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Quotes" editable="bottom">
                    <field name="name" />
                    <field name="monday" />
                    <field name="tuesday" />
                    <field name="wednesday" />
                    <field name="thursday" />
                    <field name="friday" />
                    <field name="saturday" />
                    <field name="sunday" />
                    <field name="from_date" attrs="{'required':[('to_date','!=',False)],'autocomplete':'off'}" />
                    <field name="to_date" attrs="{'required':[('from_date','!=',False)],'autocomplete':'off'}" />
                </tree>
            </field>
        </record>

        <record id="action_attendance_quotes_action_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Quotes</field>
            <field name="res_model">kw_attendance_quotes</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_attendance_quotes_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_attendance_quotes_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>

    </data>
</odoo>