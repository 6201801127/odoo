<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_bio_atd_enroll_info_form" model="ir.ui.view">
            <field name="name">view.kw_bio_atd_enroll_info. log form</field>
            <field name="model">kw_bio_atd_enroll_info</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bio Attendance Enrollments">
                    <sheet>
                        <group>
                            <field name="enroll_no" />
                            <field name="machine_no"/>
                            <field name="date" string="Date"/>
                            <field name="t_machine_no" />
                            <field name="enroll_machine_no" />
                            <field name="verify_mode" />
                            <field name="event_type" />
                             <field name="sync_status" />
                            
                             <field name="create_date" string="Created On"/>
                        </group>
                    </sheet>                   
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_kw_bio_atd_enroll_info_tree">
            <field name="name">kw_bio_atd_enroll_info.view tree</field>
            <field name="model">kw_bio_atd_enroll_info</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="enroll_no" />
                    <field name="machine_no"/>
                    <field name="date" string="Date"/>
                    <field name="t_machine_no" />
                    <field name="enroll_machine_no" />

                    <field name="verify_mode" />
                    <field name="event_type" />
                    <field name="sync_status" />
                   <!--  <field name="utc_date_time" string="UTC Date"/> -->
                    <field name="create_date" string="Created On"/>
                </tree>
            </field>
        </record>

        <record id="search_view_kw_bio_atd_enroll_info" model="ir.ui.view">
            <field name="name">Bio Attendance Enrollments Search View</field>
            <field name="model">kw_bio_atd_enroll_info</field>
            <field name="arch" type="xml">
                <search string="Search Meetings">
                    <field name="enroll_no" string="Enrollment No" />
                    <field name="date"/>
                    <filter string="Synchronized" name="sync_on_status" domain="[('sync_status','=',1)]"/>
                    <filter string="De-Synchronized" name="sync_off_status" domain="[('sync_status','=',0)]"/>

                    <filter string="Attendance Date" name="filter_attendance_date" date="date"/>

                    <filter string="Today" name="filter_attendance_day" domain="[('date','&gt;', ((context_today()-datetime.timedelta(days=1)).strftime('%Y-%m-%d'))), ('date','&lt;', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d')))]" />  
                    <separator/>
                     <group expand="0" string="Group By">
                        <filter name="enroll_no" string="Enroll No" context="{'group_by':'enroll_no'}"/>
                        <filter name="sync_status" string="Sync Status" context="{'group_by':'sync_status'}"/>
                        <separator/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_window_kw_bio_atd_enroll_info" model="ir.actions.act_window">
            <field name="name">Bio Attendance Enrollments</field>
            <field name="res_model">kw_bio_atd_enroll_info</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
           <field name="context">{"search_default_filter_attendance_day":1,"create": False,"edit": False}</field>
           <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
          
        </record>

    </data>
</odoo>
