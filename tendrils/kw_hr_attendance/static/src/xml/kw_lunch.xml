<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">
    <t t-name="MyOfficeTime">
        <div class="attendance_kiosk_mode_container d-flex align-items-center flex-column justify-content-center">
            <div class="container">
                <t t-if="widget.employee.employee_name">
                <div class="card mb-3 office-time-card">
                    <div class="row no-gutters">
                        <div class="col-md-4 text-center user-info d-flex align-items-center flex-column justify-content-center">
                            <img class="rounded-circle img-fluid mb-3 user-image" t-attf-src="/web/image?model=hr.employee&amp;field=image_medium&amp;id=#{widget.employee.employee_id}" t-att-title="widget.employee.employee_name" t-att-alt="widget.employee.employee_name"/>
                            <h2 class="mb12">
                                <span t-esc="widget.employee.employee_name"/>
                            </h2>
                            <h4>
                                <span t-esc="widget.employee.designation" />
                            </h4>
                            <h4>
                                <span t-esc="widget.employee.department" />
                            </h4>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-5">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card csm-card">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-7 text-center">
                                                        <div class="font-weight-bold text-muted mb-1">
                                                            <span class="text-muted h5">
                                                                <t t-esc="widget.employee.day"/> - <t t-esc="widget.employee.date" />
                                                            </span>
                                                        </div>
                                                        <div>
                                                            <p class="h2 font-weight-bold">
                                                            <img src="/kw_hr_attendance/static/src/img/computer-screen.png" height="20px" width="20px" style="margin-bottom: 5px; margin-right: 5px"/>Work - Started at <span t-esc="widget.employee.check_in" /> </p>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-5 text-center">
                                                        <div class="font-weight-bold text-muted mb-1 h5">Working Hour</div>
                                                        <div>
                                                            <p class="h2 font-weight-bold csm-workingtime text-lowercase" style="word-spacing: 10px;"><span t-esc="widget.employee.working_hour" /> </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    
                                    <div class="col-sm-6 pt32 csm-motivation">
                                        <p class="h3 csm-headline mb-4">
                                            Today's Motivation
                                        </p>

                                        <p class="h4 text-muted font-italic mb-4">
                                            "<t t-esc="widget.employee.quote" />"
                                        </p>
                                        <p class="h4 text-muted ">
                                            Have a Good Day!
                                        </p>
                                    </div>
                                    <div class="col-sm-6 pt32">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <!-- office in start -->
                                                <div class="card csm-checkin mb-3">
                                                    <div class="card-body p-3 check_in" t-if="widget.employee.portal_mode == 1 and !widget.employee.check_in">
                                                        <div class="row align-items-center justify-content-center">
                                                            <img src="/kw_hr_attendance/static/src/img/check-in.png" height="40px" width="30px" style="margin-right:19px" class="check_in"/>
                                                            <p class="card-title text-center mt8 text-black">
                                                                <span class="h4 text-white text-uppercase check_in"> Office in </span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="card-body p-1" t-elif="widget.employee.check_in">
                                                        <div class="row align-items-center justify-content-center">
                                                            <img src="/kw_hr_attendance/static/src/img/check-in.png" height="40px" width="30px" style="margin-right:19px"/>
                                                            <p class="card-title text-center mt8 text-black" >
                                                                <span class="h4 text-white text-uppercase" > Office In</span><br/>
                                                                <span class="h6 text-white text-uppercase" t-esc="widget.employee.check_in" />
                                                            </p>    
                                                        </div>                                               
                                                    </div>
                                                    <div class="card-body p-3" t-else="">
                                                        <div class="row align-items-center justify-content-center">
                                                            <img src="/kw_hr_attendance/static/src/img/check-in.png" height="40px" width="30px" style="margin-right:19px"/>
                                                            <p class="card-title text-center mt8 text-black" >
                                                                <span class="h4 text-white text-uppercase" > Office In</span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- office in end -->

                                            <!-- office out start -->
                                            <div class="col-sm-12">
                                                <div class="card csm-checkout mb-3">
                                                    <div class="card-body p-0 check_out" t-if="widget.employee.portal_mode == 1 and !widget.employee.check_out"  style="cursor: pointer;">
                                                        <div class="row align-items-center justify-content-center">
                                                            <p class="card-title text-center mt8 text-black">
                                                                <img src="/kw_hr_attendance/static/src/img/check-out.png" height="50px" width="30px" style="margin-left:11px; margin-right:21px"/>
                                                                <span class="h4 text-white text-uppercase"> Office out </span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="card-body p-1 check_out" t-if="widget.employee.check_out and widget.employee.portal_mode == 1" style="cursor: pointer;">
                                                        <div class="row align-items-center justify-content-center">
                                                            <img src="/kw_hr_attendance/static/src/img/check-out.png" height="50px" width="30px" style="margin-left:11px; margin-right:21px"/>
                                                            <p class="card-title text-center mt8 text-black">
                                                                <span class="h4 text-white text-uppercase" > Office Out</span><br/>
                                                                <span class="h6 text-white text-uppercase" t-esc="widget.employee.check_out" />
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="card-body p-1" t-if="widget.employee.check_out and widget.employee.portal_mode != 1">
                                                        <div class="row align-items-center justify-content-center">
                                                            <img src="/kw_hr_attendance/static/src/img/check-out.png" height="50px" width="30px" style="margin-left:11px; margin-right:21px"/>
                                                            <p class="card-title text-center mt8 text-black">
                                                                <span class="h4 text-white text-uppercase" > Office Out</span><br/>
                                                                <span class="h6 text-white text-uppercase" t-esc="widget.employee.check_out" />
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="card-body p-2" t-if="!widget.employee.check_out and widget.employee.portal_mode != 1">
                                                        <div class="row align-items-center justify-content-center">
                                                            <img src="/kw_hr_attendance/static/src/img/check-out.png" height="50px" width="30px" style="margin-left:11px; margin-right:21px"/>
                                                            <p class="card-title text-center mt8 text-black">
                                                                <span class="h4 text-white text-uppercase"> Office out </span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- office out end -->

                                            <div class="col-sm-12">
                                                <div class="row">
                                                    <!-- lunch out start -->
                                                    <div class="col-lg-6 col-sm-12 mb-3">
                                                        <div class="card lunch-out">
                                                            <div class="card-body p-3 lunch_out lunch-out" t-if="!widget.employee.lunch_out_time">
                                                                <div class="row align-items-center justify-content-center">
                                                                    <img src="/kw_hr_attendance/static/src/img/lunch.png" class="lunchout" alt="Lunch Out" height="35px" width="35px" style="margin-right:5px"/>
                                                                    <p class="card-title text-center mt8 text-black" >
                                                                        <span class="h5 text-capitalize lunch_out" > Lunch out </span>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <div class="card-body p-1 lunch-out" t-if="widget.employee.lunch_out_time">
                                                                <div class="row align-items-center justify-content-center">
                                                                    <img src="/kw_hr_attendance/static/src/img/lunch.png" alt="Lunch Out" class="lunchout" height="35px" width="35px" style="margin-right:5px"/>
                                                                    <p class="card-title text-center mt8 text-black">
                                                                        <span class="h6 text-capitalize">Lunch out </span><br/>
                                                                        <span class="h6 text-uppercase" t-esc="widget.employee.lunch_out_time" />
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- lunch out end -->
                                                    
                                                    <!-- lunch in start -->
                                                    <div class="col-lg-6 col-sm-12">
                                                        <div class="card lunch-in">
                                                            <div class="card-body lunch_in p-3 lunch-in" t-if="!widget.employee.lunch_in_time">
                                                                <div class="row align-items-center justify-content-center">
                                                                    <img src="/kw_hr_attendance/static/src/img/LunchIn.png" alt="Lunch In" height="35px" width="35px" style="margin-right:5px"/>
                                                                    <p class="card-title text-center mt8 text-black" >
                                                                        <span class="h5 text-capitalize lunch_in" > Lunch In </span>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <div class="card-body p-1 lunch-in" t-if="widget.employee.lunch_in_time">
                                                                <div class="row align-items-center justify-content-center">
                                                                    <img src="/kw_hr_attendance/static/src/img/LunchIn.png" alt="Lunch In" height="35px" width="35px" style="margin-right:5px"/>
                                                                    <p class="card-title text-center mt8 text-black">
                                                                        <span class="h6 text-capitalize">Lunch In </span><br/>
                                                                        <span class="h6 text-uppercase" t-esc="widget.employee.lunch_in_time" />
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- lunch in end -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </t>
                <t t-else="">
                    <div class="card mb-3 ">
                        <div class="row no-gutters">
                            <div class="col-md-12 text-center  justify-content-center p-4 h3">
                                <i class="fa fa-warning text-warning"/> No information found!
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</template>
