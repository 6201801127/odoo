<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="kw_hr_attendance.holiday_calendar">
      
        <div class="container-fluid p-5">
            <div class="row" id="employee_filter">
                <div class="col-lg-1  col-sm-3 col-4 mb-3">
                    <label class="h3 mt-2"> Employee: </label>
                </div>
                <div class="col-lg-3 col-sm-6 col-8">
                    <select class="form-control form-control-sm font-weight-bold" id="sel_employee" name="sel_employee" style="height: 32px; font-size: 1rem; border: 2px solid #108fbb;" t-att-data-selected="master_data.data['default_employee']">
                        <t t-foreach="master_data.data['employee_master']" t-as="employee_master">
                            <option t-att-value="employee_master['id']" t-att-selected="employee_master['id'] == master_data.data['default_employee']">
                                <t t-esc="employee_master['name']"/> <t t-if="employee_master['emp_code']" >(<t t-esc="employee_master['emp_code']" />) </t>
                            </option>
                        </t>                                     
                        
                    </select>
                </div>

                <div class="col-sm-2 showButton">                            
                    <button class="btn btn-success " id="btnSearchMyHoliday">Show Personalized Calendar</button>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-12 pl-5">
                <input type="checkbox" class=" form-check-input" id="showFilter" />
                <label class="pl-2 form-check-label" for="showFilter">Search by Location/Shift</label>
                </div>
            </div>
            <div class="row" id="location_shift_filter">
                    <div class="col-lg-1  col-sm-3 col-4 mb-3">
                        <label class="h3 mt-2"> Location: </label>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-8">
                        <select class="form-control form-control-sm font-weight-bold" name="sel_branch_master" id="sel_branch_master" t-att-data-selected="master_data.data['default_branch']"  style="height: 32px; font-size: 1rem; border: 2px solid #108fbb;">
                            <t t-foreach="master_data.data['branches']" t-as="branch">
                                <option t-att-value="branch['id']" t-att-selected="branch['id'] == master_data.data['default_branch']"  >
                                    <p><b t-esc="branch['alias']"></b></p>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="col-lg-1  col-sm-3 col-4 mb-3">
                        <label class="h3 mt-2"> Shift: </label>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-8">
                        <select class="form-control form-control-sm font-weight-bold" name="sel_shift" id="sel_shift" style="height: 32px; font-size: 1rem; border: 2px solid #108fbb;" t-att-data-selected="master_data.data['default_shift']">
                            <t t-foreach="master_data.data['shift_master']" t-as="shift_master">
                                <option t-att-value="shift_master['id']" t-att-selected="shift_master['id'] == master_data.data['default_shift']">
                                    <t t-esc="shift_master['name']"/>
                                </option>
                            </t>
                        </select>
                    </div>

                    <div class="col-sm-2 showButton">
                        <button class="btn btn-primary " id="btnSearchHoliday" >Show</button>
                        <!--  <button class="btn btn-success " id="btnSearchMyHoliday" >My Calendar</button> -->
                    </div>

                    
                <!--Start: Personalised Calendar -->
                    
                <!--End: Personalised Calendar -->
            </div>
            <div class="container-fluid">
                <div class="row desktop mt-5 align-items-center">
                    <div class="color-block fixed-holiday">  </div> <span class="font-weight-bold ml-2 mr-3 " > Holiday </span>
                    <div class="color-block weekoff-weekend">  </div> <span class="font-weight-bold ml-2 mr-3 " > Week Off </span>
                    <div class="color-block roster-weekoff">  </div> <span class="font-weight-bold ml-2 mr-3 " > Roster Week Off </span>
                    <div class="color-block roster">  </div> <span class="font-weight-bold ml-2 mr-3 " > Holiday + Roster Working Day </span>
                </div>

                <div class="row">
                    <div class="col-sm-3 row mb-2 align-items-center"> <div class="color-block fixed-holiday">  </div> <span class="font-weight-bold ml-2 mr-3 mt-1" > Holiday </span> </div>
                    <div class="col-sm-3 row mb-2 align-items-center"> <div class="color-block weekoff-weekend">  </div> <span class="font-weight-bold ml-2 mr-3 mt-1" > Week Off </span> </div>
                    <div class="col-sm-3 row mb-2 align-items-center"> <div class="color-block roster-weekoff">  </div> <span class="font-weight-bold ml-2 mr-3 mt-1" > Roster Week Off </span> </div>
                    <div class="col-sm-3 row mb-2 align-items-center"> <div class="color-block roster">  </div> <span class="font-weight-bold ml-2 mr-3 mt-1" > Holiday &amp; Roster Working Day </span> </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-sm-10">
                    <div id="holiday_calender"></div>
                </div>
                <div class="col-sm-2">
                    <div class="text-center holiday">
                        <p class="holiday-text">Holidays</p>
                    </div>

                    <div class="holidays">

                    </div>
                </div>
            </div>

        </div>  
                           
    </t>
</templates>