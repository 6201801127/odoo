<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="kw_employee_sync_wizard_form" model="ir.ui.view">
            <field name="name">Employee Synchronization wizard</field>
            <field name="model">kw_employee_sync_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();                       
                    });
                    </script>
                        <group>
                            <field name="from_date" required='1' string="From Date" style="overflow-y: hidden;width: 300px;"/>
                            <field name="to_date" required='1' style="overflow-y: hidden;width: 300px;" string="To Date"/>
                            <field name="page_no" required='1' style="overflow-y: hidden;width: 300px;" string="Page No"/>
                            <field name="page_size" required='1' style="overflow-y: hidden;width: 300px;" string="Page Size"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="get_employee_synchronozation_data" type="object" class="btn btn-success btn-lg">Sync Now</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>  
            </field>
        </record>

        <record id="kw_employee_sync_wizard_server_action" model="ir.actions.server">
            <field name="name">Employee Synchronization Wizard</field>
            <field name="condition">True</field>
            <field name="model_id" ref="kw_kwantify_integration.model_kw_employee_sync_wizard"/>
            <field name="state">code</field>
            <field name="code">
form_view_id = env.ref('kw_kwantify_integration.kw_employee_sync_wizard_form').id
action = {
        'type': 'ir.actions.act_window',
        'name' : 'Employee Synchronization Wizard',
        'view_mode': 'form',
        'res_model': 'kw_employee_sync_wizard',
        'target': 'new',
}
            </field>
        </record>


        <record id="kw_ex_employee_sync_wizard_form" model="ir.ui.view">
            <field name="name">Ex Employee Synchronization wizard</field>
            <field name="model">kw_exemployee_sync_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                            $(".modal-footer").hide();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <sheet>
                        <group>
                            <field name="exemployee_ids"   widget="many2many_tags" force_save='1' required='1' options="{'no_open': True,'no_create':True,'no_edit':True}" />
                            <field name="kw_ids" readonly="1"/>
                        </group>
                        <button string="Sync" name="get_ex_employee_synchronozation_data"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_ex_employee_sync_wizard_action" model="ir.actions.act_window">
            <field name="name">Ex-Employee Sync Log</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_exemployee_sync_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!--Add Text Here -->
                </p>
            </field>
        </record>

      <menuitem id="ex_employee_data_sync_menu"
                  name="Ex-Employee Data Sync from V5"
                  parent="disable_debug_mode.menu_technical_developer"
                  action="kw_ex_employee_sync_wizard_action"
                  sequence="20"/>
    </data>
</odoo>