<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_sync_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.kw_sync</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Kwantify Resource Sync" string="Tendrils Resource Sync" data-key="kw_kwantify_integration"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>Tendrils Web Service URL Setting</h2>
                    <div class="row mt16 o_settings_container">

                        <div class="col-12 col-lg-12 o_setting_box" title="Employee Web Service URL" id="employee_web_service_url">
                           
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Employee Web Service URL</span>
                                <div class="text-muted">
                                    Set the web service URL for Employee Data
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_sync_service_url" string="URL"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_sync_service_url" />
                                    </div>
                                </div>
                            </div>

                        </div>

                       <div class="col-12 col-lg-12 o_setting_box" title="Employee Service Sync Days" id="employee_service_sync_days">
                           
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Employee Web Service Sync Days</span>
                                <div class="text-muted">
                                    Set how many days before employee info to be processed 
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_sync_service_days" string="Days"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_sync_service_days"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-lg-12 o_setting_box" title="Service Sync Error Log Send Mail ">
                           
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Employee Web Service Sync Error Log </span>
                                <div class="text-muted">
                                    Set E-mail to get send the sync error log
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_sync_error_log_mail" string="E-mail"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_sync_error_log_mail"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>


                </div>
            </xpath>
        </field>
    </record>

    <record id="kw_integration_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_kwantify_integration'}</field>
    </record>




    <!-- <menuitem id="kwonboard_envconfig_menu" name="Settings" parent="kwonboard_config_menu" sequence="1" action="kw_onboarding_config_settings_action" /> -->

</odoo>
