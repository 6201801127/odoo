<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="kw_odoo_sync_email_template" model="mail.template">
          <field name="name">Tendrils resource sync error log e-mail template</field>
          <field name="email_from">${object.create_uid.email}</field>
          <field name="subject">Tendrils resource sync error log ${object.create_date}</field>

          <field name="email_to">${object.get_config_email_to()}</field>
          <field name="model_id" ref="kw_kwantify_integration.model_kw_kwantify_integration_log"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                    <![CDATA[

                        <p style="text-align: center; ">  
                                 ${(object.request_params or '-') | safe}
                        </p> <br/>
                        ${(object.error_log or '-') | safe}
                    ]]>
                    
            </field>
       </record>


    </data>
</odoo>