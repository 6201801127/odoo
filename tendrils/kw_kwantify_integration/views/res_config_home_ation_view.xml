<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_home_action_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.home_action</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row">
                                    <label string="New User Home Action" for="home_action_id" class="col-lg-5"/>
                                    <field name="home_action_id"/>
                                </div>
                                <div class="text-muted">
                                    Set Home Action for new users created in service.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="home_action_config_settings_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
