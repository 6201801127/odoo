                                                    ${ctx['effective_from']}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;height: 34px;" width="250px">
                                                    Last working Day
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${ctx['last_working_date']}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;height: 34px;" width="250px">
                                                    Resignation Type
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${ctx['reg_type']}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;height: 34px;" width="250px">
                                                    Reason For Resignation
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${ctx['reason']}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="height: 34px;font-size: 1.1rem;font-weight: bold;color: #444141;padding-bottom: 10px;"  colspan="2">
                                                    <p>Employee Details</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;height: 34px;" width="250px">
                                                Location
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${ctx['branch_alias']}
                                                </td>
                                            </tr>

                                            % if ctx['department_id']:
                                                <tr>
                                                    <td style="color:#676767;height: 34px;" width="250px">
                                                    Department
                                                    </td>
                                                    <td style="color:#167b9e;height: 34px;">
                                                        ${ctx['department_id']}
                                                    </td>
                                                </tr>
                                            % endif

                                            % if ctx['division']:
                                                <tr>
                                                    <td style="color:#676767;height: 34px;" width="250px">
                                                    Division
                                                    </td>
                                                    <td style="color:#167b9e;height: 34px;">
                                                        ${ctx['division']}
                                                    </td>
                                                </tr>
                                            % endif

                                            % if ctx['section']:
                                                <tr>
                                                    <td style="color:#676767;height: 34px;" width="250px">
                                                    Section
                                                    </td>
                                                    <td style="color:#167b9e;height: 34px;">
                                                        ${ctx['section']}
                                                    </td>
                                                </tr>
                                             % endif

                                            % if ctx['practise']:
                                                <tr>
                                                    <td style="color:#676767;height: 34px;" width="250px">
                                                    Practice
                                                    </td>
                                                    <td style="color:#167b9e;height: 34px;">
                                                        ${ctx['practise']}
                                                    </td>
                                                </tr>
                                             % endif

                                            % if ctx['job_id']:
                                                <tr>
                                                    <td style="color:#676767;height: 34px;" width="250px">
                                                        Designation
                                                    </td>
                                                    <td style="color:#167b9e;height: 34px;">
                                                        ${ctx['job_id']}
                                                    </td>
                                                </tr>
                                            % endif
                                            <tr>
