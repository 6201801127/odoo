<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="demise_mail_template" model="mail.template">
			<field name="name">Demise Mail</field>
			<field name="model_id" ref="kw_eos.model_kw_resignation_log"/>
			<field name="auto_delete" eval="False"/>
			<field name="email_from">${object.env.user.email}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="email_cc">${ctx['email_cc']}</field>
			<field name="subject">Demise | ${ctx['applicant_name']}(${ctx['code']})</field>
			<field name="body_html">


             <![CDATA[

                      <table border="0" style="width: 100%;">
              <tr>
                        <td> 
                        <div style="margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                      All,
                                    </h5>
                                    <p>
                                    We are sorry to announce the demise of <b>${ctx['applicant_name']}(${ctx['code']}).
                                    </p>

                                </div>
                                <div style="margin-bottom:1em;">
                                <table border="0" cellspacing="0" cellpadding="5" style="border-collapse: collapse;font-size: 16px;width:100%;">
                               
                       
                                <tbody style="vertical-align: top;>  
                            
                                     
                                   <tr>
                                        <td style="height: 34px;font-size: 1.6rem;font-weight: bold;color: #444141;padding-bottom: 10px;"  colspan="2">
                                            <p style="">Demise Details</p>
                                        </td>
                                    </tr>
                                     <tr>
                                        <td style="color:#676767;height: 34px;" width="250px">
                                            Date Of Joining
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${ctx['date_of_joining']}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;height: 34px;" width="250px">
                                            Last Date
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                             ${ctx['last_working_date']}
                                        </td>
                                    </tr> 
                                    
                                    <tr>
                                        <td style="color:#676767;height: 34px;" width="250px">
                                            Reason 
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                              ${ctx['reason']}
                                        </td>
                                    </tr>
                                     <tr>
                                        <td style="height: 34px;font-size: 1.1rem;font-weight: bold;color: #444141;padding-bottom: 10px;"  colspan="2">
                                            <p>Employee Details</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;height: 34px;" width="250px">
                                        Location
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${ctx['branch_alias']}
                                        </td>
                                    </tr>

                                    % if ctx['department_id']:
                                        <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                            Department
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['department_id']}
                                            </td>
                                        </tr>
                                    % endif

                                    % if ctx['division']:
                                        <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                            Division
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['division']}
                                            </td>
                                        </tr>
                                    % endif

                                    % if ctx['section']:
                                        <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                            Section
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['section']}
                                            </td>
                                        </tr>
                                        % endif

                                    % if ctx['practise']:
                                        <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                            Practice
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['practise']}
                                            </td>
                                        </tr>
                                        % endif

                                    % if ctx['job_id']:
                                        <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                                Designation
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['job_id']}
                                            </td>
                                        </tr>
                                    % endif
                                        <tr>
                                            <td style="height: 34px;font-size: 1.1rem;font-weight: bold;color: #444141;padding-bottom: 10px;"  colspan="2">
                                                <p">Other Details</p>
                                            </td>
                                        </tr>
                                        %if ctx['tour_clearance']:
                                            <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                                Tour Settlement Details : 
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['tour_clearance']}
                                            </td>
                                        </tr>
                                        %endif
                                        %if ctx['sal_adv_clearance']:
                                            <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                                Salary Advance : 
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['sal_adv_clearance']}
                                            </td>
                                        </tr>
                                        %endif
                                        %if ctx['petty_cash_clearance']:
                                            <tr>
                                            <td style="color:#676767;height: 34px;" width="250px">
                                                Petty Cash Details :
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${ctx['petty_cash_clearance']}
                                            </td>
                                        </tr>
                                        %endif
                                        %if ctx['asset_clearance']:
                                            <tr>
                                                <td style="color:#676767;height: 34px;" width="250px">
                                                    IT Asset Details :
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${ctx['asset_clearance']}
                                                </td>
                                            /tr>
                                        %endif
                                    
                                    </tbody>  
                                </table>
                                %if ctx['assetdata']:
                                 <table border="1" cellpadding="5" cellspacing="0" style="border-collapse: collapse;font-size: 16px; margin-top:1rem; ">
                                    <tr>
                                        <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Asset Code </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Asset Name </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Purchase Date </th>
                                        <th style="height: 30px;width:22%;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Waranty Date </th>
                                    </tr>
                                    %for data in ctx['assetdata']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:10%;">
                                                ${data.get('AssetCode')}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${data.get('AssetName')}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${data.get('PurchaseDate')}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:10%;">
                                                ${data.get('WarantyDate')}
                                            </td>
                                        </tr>
                                    %endfor
                                </table>
                                %endif
                            </div>
                            <div style="margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 1px;">
                            <p>Thank You.</p>
                            % if object.env.user and object.env.user.signature:
                                ${object.env.user.signature | safe}
                            % endif
                            </div>  
                                 
                        </td>
                    </tr>
 			]]>
