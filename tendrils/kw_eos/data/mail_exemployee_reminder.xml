<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="exemployee_reminder_mail_template" model="mail.template">
			<field name="name">Ex-Employee Reminder Mail Template</field>
			<field name="model_id" ref="kw_eos.model_hr_employee_clearance"/>
			<field name="auto_delete" eval="False"/>
			<field name="email_from">${object.company_id and object.company_id.email or ''}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Ex-Employee | Reminder | ${object.name}</field>
			<field name="body_html">
			<![CDATA[
              <tr>
                        <td>
                            <table border="0">
                        <tr>
                            <td>
                            <div style="margin-left: 1.2rem;"> 
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small>Sir/Madam,</h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">  ${ctx['employee']}'s clearance process has been completed. </p>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><br/>

                                <p> Kindly Convert to Ex-Employee.</p>
                                
                                <br/>
                                 <p>This is a system generated email. Please do not reply to this mail.</p>
                                    
                            </div>
                        </td>
                        </tr>
                            
                        </td>
                    </tr>
 			]]>

            </field>
			<field name="user_signature" eval="False"/>
		</record>
    
	</data>
</odoo>
