<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="reminder_mail_after_two_days_template" model="mail.template">
            <field name="name">Reminder to RA : after 2 working days of applying RL</field>
            <field name="model_id" ref="kw_eos.model_kw_resignation"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${object.applicant_id.parent_id.work_email}</field>
            <field name="email_cc"></field>
            <field name="subject">RL Application of ${object.applicant_id.name} ( ${object.applicant_id.emp_code}) | Pending for action | Reminder-1</field>
            <field name="body_html">
                <![CDATA[
                    <tr>
                        <td>
                            <table border="0">
                                <tr>
                                    <td>
                                        <div style="margin-left: 1.2rem;"> 
                                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small> ${object.applicant_id.parent_id.name},</h5>

                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> RL application of ${object.applicant_id.name} (${object.applicant_id.emp_code}) is pending for approval at your account. Please take the action to start the KT process. </p>

                                            <br/>
                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">This is a system generated email. Please do not reply to this mail.</p>
                                            
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
 			]]>

            </field>
            <field name="user_signature" eval="False"/>
        </record>

