<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="eos_approval_mail_template" model="mail.template">
			<field name="name">EOS Request</field>
			<field name="model_id" ref="kw_eos.model_kw_end_of_service"/>
			<field name="auto_delete" eval="False"/>
			<field name="email_from">${ctx['forwardby']}</field>
			<field name="email_to">${object.action_to_be_taken_by.work_email}</field>
			<field name="email_cc"></field>
			<field name="subject">EOS Request Raised</field>
			<field name="body_html">
			<![CDATA[
                 <tr>
                        <td>
                            <table border="0">
                        <tr>
                            <td>
                            <div style="margin-left: 1.2rem;"> 
                                <h2 style="color:rgb(22, 123, 158);font-weight: 400;margin: 4px 0 0 0;" >EOS Request</h2>
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small> ${object.action_to_be_taken_by.name},</h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">EOS Request has been applied by ${object.user_id.name}.</p>
                                <p>
                                   Please log into Tendrils to view details and to take action.
                                </p>
                                 <p>This is a system generated email. Please do not reply to this mail.</p>
                                    <p>Thanks &amp; Regards</p>
                                         <p>Tendrils Portal</p>
                            </div>
                        </td>
                        </tr>
                            
                        </td>
                    </tr>
			    
                    ]]>

            </field>
			<field name="user_signature" eval="False"/>
		</record>
        <record id="eos_forward_mail_template" model="mail.template">
            <field name="name">EOS Request</field>
            <field name="model_id" ref="kw_eos.model_kw_end_of_service"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${object.forward_by.work_email}</field>
            <field name="email_to">${object.forward_to.work_email}</field>
            <field name="email_cc"></field>
            <field name="subject">EOS Request Forwarded</field>
            <field name="body_html">
			<![CDATA[
                 <tr>
                        <td>
                            <table border="0">
                        <tr>
                            <td>
                            <div style="margin-left: 1.2rem;">
                                <h2 style="color:rgb(22, 123, 158);font-weight: 400;margin: 4px 0 0 0;" >EOS Request</h2>
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small> ${object.forward_to.name},</h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> EOS request has been forwarded by ${object.forward_by.name} for the employee ${object.applicant_id.name}(${object.applicant_id.emp_code}).</p>
                                <p>
                                   Please log into Tendrils to view details and to take action.
                                </p>
                                 <p>This is a system generated email. Please do not reply to this mail.</p>
                                    <p>Thanks &amp; Regards</p>
                                         <p>Tendrils Portal</p>
                            </div>
                        </td>
                        </tr>
                            
                        </td>
                    </tr>

			    
                    ]]>

            </field>
            <field name="user_signature" eval="False"/>
        </record>
	</data>
</odoo>
