<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="mail_clearance_response" model="mail.template">
			<field name="name">Clearance Response</field>
			<field name="model_id" ref="kw_eos.model_kw_clearance_log"/>
			<field name="auto_delete" eval="False"/>
			<field name="email_from">${object.env.user.email}</field>
			<field name="email_to">${ctx['email_to'] or ''}</field>
			<field name="email_cc">${ctx['cc']}</field>
			<field name="subject">EOS | ${ctx['applicant_name']}(${ctx['applicant_code']}) | Clearance Completed</field>
			<field name="body_html">
                <![CDATA[
                    
                        <tr>
                            <td>
                                <div> 
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small> Sir/Madam,</h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">The clearance form of ${ctx['applicant_name']} has been <span style="color:red;">Completed</span> by ${ctx['action']}.</p>
                                </div>
                                <div style="margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 1px;">
                                    <p>Thank You.</p>
                                    % if object.env.user and object.env.user.signature:
                                        ${object.env.user.signature | safe}
                                    % endif
                                </div>
                            </td>
                        </tr>
                                
                        ]]>

            </field>
		</record>

	</data>
</odoo>