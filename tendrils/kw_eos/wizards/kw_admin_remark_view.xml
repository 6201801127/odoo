        <!-- contract closure reject remark -->

        <record id="contract_remark_view" model="ir.ui.view">
        <field name="name">Contract Reject</field>
        <field name="model">kw_admin_remark_wizard</field>
            <field name="priority" eval="77"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").show();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <sheet>
                        <field name="resignation_id" invisible="1"/>
                        <field name="remark" required='1'/>
                </sheet>
                <footer>
                    <button name="btn_submit" string="Submit" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

