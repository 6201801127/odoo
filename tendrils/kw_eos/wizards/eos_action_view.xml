<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <record id="forward_eos_view" model="ir.ui.view">
        <field name="name">Forward</field>
        <field name="model">kw_eos_forward_wizard</field>
            <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <field name="eos_id" invisible="1"/>
                        <field name="forward_to" options="{'no_create': True, 'no_edit':True, 'no_open':True}" string="Forward to"/>
                        <!-- <field name="forward_reason"/> -->
                        <field name="remark"/>
                    </group>
                </sheet>
                <footer>
                    <button name="save" string="Save" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="remark_eos_view" model="ir.ui.view">
        <field name="name">Remarks</field>
        <field name="model">kw_eos_remark_wizard</field>
            <field name="priority" eval="76"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <field name="eos_id" invisible="1"/>
                        <field name="remark"/>
                    </group>
                </sheet>
                <footer>
                    <button name="save" string="Save" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    </data>
</odoo>