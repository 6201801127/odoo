<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="eos_report_wizard_view" model="ir.ui.view">
		<field name="name">EOS Report</field>
		<field name="model">eos_report_wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="applied_by" widget="radio" options="{'horizontal': true}"/>
						<field name="date_from"
						       attrs="{'invisible': [('applied_by', 'not in', ['dt'])],'required':[('applied_by', '=', 'dt')]}"
						       widget="date"/>
						<field name="date_to"
						       attrs="{'invisible': [('applied_by', 'not in', ['dt'])],'required':[('applied_by', '=', 'dt')]}"
						       widget="date"/>
						<field name="employee_ids"
						       attrs="{'invisible': [('applied_by', 'not in', ['employee'])],'required':[('applied_by', '=', 'employee')]}"
						       options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="month"
						       attrs="{'invisible': [('applied_by', 'not in', ['month'])],'required':[('applied_by', '=', 'month')]}"/>
						<field name="year"
						       attrs="{'invisible': [('applied_by', 'not in', ['year'])],'required':[('applied_by', '=', 'year')]}"/>
						<field name="emptype"
						       attrs="{'invisible': [('applied_by', 'not in', ['emptype'])],'required':[('applied_by', '=', 'emptype')]}" options="{'no_create': True, 'no_edit':True, 'no_open':True}" />
						<field name="offboard"
						       attrs="{'invisible': [('applied_by', 'not in', ['offboard'])],'required':[('applied_by', '=', 'offboard')]}"  options="{'no_create': True, 'no_edit':True, 'no_open':True}" />
						<field name="department"
						       attrs="{'invisible': [('applied_by', 'not in', ['department'])],'required':[('applied_by', '=', 'department')]}"  options="{'no_create': True, 'no_edit':True, 'no_open':True}" />
						<field name="location"
						       attrs="{'invisible': [('applied_by', 'not in', ['location'])],'required':[('applied_by', '=', 'location')]}"  options="{'no_create': True, 'no_edit':True, 'no_open':True}" />
						<field name="gender"
						       attrs="{'invisible': [('applied_by', 'not in', ['gender'])],'required':[('applied_by', '=', 'gender')]}"/>
					</group>
				</group>
				<footer>
					<button name="search_report" string="View Reports" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="eos_report_wizard_action" model="ir.actions.act_window">
		<field name="name">Report</field>
		<field name="res_model">eos_report_wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form,tree</field>
		<field name="view_id" ref="eos_report_wizard_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records to take action...
			</p>
		</field>
	</record>

