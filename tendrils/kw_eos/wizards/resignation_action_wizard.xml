<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <record id="forward_resignation_view" model="ir.ui.view">
        <field name="name">Forward</field>
        <field name="model">kw_resignation_forward_wizard</field>
            <field name="priority" eval="80"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <field name="resignation_id" invisible="1"/>
                        <field name="forward_to" options="{'no_create': True, 'no_edit':True, 'no_open':True}" string="Forward to" required='1'/>
                        <field name="forward_reason" required='1'/>
                        
                    </group>
                </sheet>
                <footer>
                    <button name="save_inform" string="Save" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="remark_resignation_view" model="ir.ui.view">
        <field name="name">Remarks</field>
        <field name="model">kw_resignation_remark_wizard</field>
        <field name="priority" eval="81"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                <span invisible="context.get('kt_alert',True)"><i style="color:red;">There is no KT plan scheduled, are you sure to approve ?</i></span><br/>
                <span invisible="context.get('kt_success',True)"><i style="color:green;">The KT plan is scheduled, are you sure to approve ?</i></span><br/>
                        <field name="resignation_id" invisible="1"/>
                        <field name="remark" required='1'/>
                </sheet>
                <footer>
                    <button name="save" string="Save" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_resignation_view" model="ir.ui.view">
        <field name="name">Cancel</field>
        <field name="model">kw_resignation_cancellation_wizard</field>
            <field name="priority" eval="82"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <field name="resignation_id" invisible="1"/>
                        <field name="cancel_reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="save_info" string="Save" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="kw_offboarding_report_wizard_view" model="ir.ui.view">
        <field name="name">Offboarding Report</field>
        <field name="model">kw_offboarding_report_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="applied_by" widget="radio" options="{'horizontal': true}"/>
                        <field name="search_by" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('applied_by', 'in', ['employee','exemployee','all'])]}"/>
                        <field name="year" attrs="{'invisible': [('applied_by', 'in', ['dt','employee','all','exemployee'])],'required':[('applied_by', '=', 'my')]}"/>
                        <field name="month" attrs="{'invisible': [('applied_by', 'in', ['dt','employee','all','exemployee'])],'required':[('applied_by', '=', 'my')]}"/>

                        <field name="date_from" attrs="{'invisible': [('applied_by', 'in', ['my','employee','all','exemployee'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />
                        <field name="date_to" attrs="{'invisible': [('applied_by', 'in', ['my','employee','all','exemployee'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />

                        <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('applied_by', 'in', ['my','dt','all','exemployee'])],'required':[('applied_by', '=', 'employee')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        <field name="exemployee_ids" context="{'active_test':False}" widget="many2many_tags" attrs="{'invisible': [('applied_by', 'in', ['my','dt','all','employee'])],'required':[('applied_by', '=', 'exemployee')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        <field name="report_state" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('applied_by', '=','all')],'required':[('applied_by', 'in', ['dt','my','employee','exemployee'])]}" />
                    </group>
                </group>
                <footer>
                    <button name="get_offboarding_report_data" string="View Reports" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
