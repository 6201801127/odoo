                    <field name="rl_cancel_reject_remark" required='1'/>
                </sheet>
                <footer>
                    <button name="btn_reject_rl_cancel" string="Submit" type="object" class="btn-success" />
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    </data>
</odoo>