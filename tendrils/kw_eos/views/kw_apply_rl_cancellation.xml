<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="apply_rl_cancellation_view_form" model="ir.ui.view">
            <field name="name">RL Cancellation Form</field>
            <field name="model">kw_resignation</field>
            <field name="priority" eval="288"/>
            <field name="arch" type="xml">
                <form string="RL Cancellation Form" create='false' edit='false' delete='false'>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div id="o_employee_container"><div id="o_employee_main">
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image&quot;}"/>
                        <div class="oe_title">
                            <label for="applicant_name" class="oe_edit_only"/>
                            <h1>
                                <field name="applicant_name" readonly="1"/>
                                <h5>
                                    <br/>
                                    <field name="applicant_code" readonly="1"/>
                                </h5>
                            </h1>
                            
                        </div>
                        <group>
                            <group>
                                <field name="budget_submit" invisible="1"/>
                                <field name="done_by_finance" invisible="1"/>
                                <field name="is_finance_user" invisible='1'/>
                                <field name="check_contract_create_user" invisible="1"/>
                                <field name="eos_status" invisible="1"/>
                                <field name="apply_for" invisible="1"/>
                                <field name="logged_user" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="is_RA" invisible="1"/>
                                <field name="is_dept_manager" invisible="1"/>
                                <field name="applicant_user_id_check" invisible='1'/>

                                <!-- New Fields -->
                                <field name="contract_check" invisible='1'/>
                                <field name="dept_head_check" invisible='1'/>
                                <field name="is_manager" invisible='1'/>
                                <field name="ra_cancel_aprv_btn_check" invisible="1"/>
                                <field name="show_btn_apply" invisible="1"/>
                                <field name="show_btn_foward" invisible="1"/>
                                <field name="show_btn_confirm" invisible="1"/>
                                <field name="show_btn_hold" invisible="1"/>
                                <field name="hide_btn_cancel" invisible="1"/>
                                <field name="cancel_process" invisible="1"/>
                                <field name="show_cancel_apply" invisible="1"/>
                                <field name="show_cancel_foward" invisible="1"/>
                                <field name="show_cancel_confirm" invisible="1"/>
                                <field name="show_cancel_hold" invisible="1"/>

                                <field name="offboard_type_reg" invisible='1'/>
                                <field name="contract_closure_check" invisible='1'/>
                                <field name="retirement_check" invisible='1'/>
                                <field name="termination_check" invisible='1'/>
                                <field name="demise_check" invisible='1'/>
                                <field name="report_check" invisible='1'/>
                                <field name="document_name" invisible="1"/>
                                

                                <!-- <field name="resignation_apply_for" widget="radio" attrs="{'invisible':[('is_RA','=', False)],'readonly':[('id','!=', False),('is_RA','=', True)]}" options="{'horizontal': true}" invisible='1'/> -->

                                <field name="applicant_id" options="{'no_create': True, 'no_edit':True, 'no_open':True}" />
                                <field name="offboarding_type" options="{'no_create': True, 'no_edit':True, 'no_open':True}" attrs="{'readonly':[('id','!=', False)]}"/>

                                <!-- <field name="applicant_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" attrs="{'required':[('resignation_apply_for','=','subordinate')],'readonly':[('id','!=', False),('is_RA','=', True)]}" domain="[('parent_id','in',uid.employee_ids)]"/> -->


                                <field name="reg_type" options="{'no_create': True, 'no_edit':True, 'no_open':True}" attrs="{'invisible':[('offboard_type_reg','=',False)],'readonly':[('id','!=', False),('state','=', 'apply')]}"/>
                                <field name="reason" attrs="{'invisible':[('offboard_type_reg','=',False)],'readonly':[('id','!=', False),('state','=', 'apply')]}"/>
                                <field name="cancel_reason" attrs="{'invisible':[('state','!=','waiting_for_rl_cancellation')],'readonly':[('state','in', ['apply','forward','confirm','grant'])]}"/>
                                <field name="contract_closure" attrs="{'invisible':[('contract_closure_check','=',False)]}"/>
                                <field name="retirement" attrs="{'invisible':[('retirement_check','=',False)]}"/>
                                <field name="major_activity" attrs="{'invisible':[('retirement_check','=',False)]}"/>
                                <field name="termination" attrs="{'invisible':[('termination_check','=',False)]}"/>
                                <field name="termination_reason" attrs="{'invisible':[('termination_check','=',False)]}"/>
                                <field name="termination_remark" attrs="{'invisible':[('termination_check','=',False)],'required':[('termination_check','=',True)]}"/>
                                <field name="upload_related_document" filename='document_name' string='Upload Related Document' attrs="{'invisible':[('termination_check','=',False)],'required':[('termination_check','=',True)],'readonly':[('state','!=', 'apply')]}"/>
                                <label for='upload_related_document' attrs="{'invisible':['|',('termination_check','=',False),('id','>', 0)]}" style='font-weight: normal;' class='text-danger' string='(Only .jpeg, .jpg and .png format are allowed.)'/><!-- <div class="file-format-note">(Only .jpeg,.png, .pdf format are allowed.Maximum file size is 4 MB) &#x2063;<span style="color:red;">*</span></div> -->
                                
                                <field name="demise" attrs="{'invisible':[('demise_check','=',False)]}"/>
                                <field name="demise_reason" attrs="{'invisible':[('demise_check','=',False)]}"/>
                            </group>
                           
                            <group>
                                <field name="effective_form" required="1" attrs="{'readonly':[('state','=', 'grant')]}"/>
                                <field name="last_working_date"  force_save="1" attrs="{'readonly':[('state','=', 'grant')]}"/>
                                <field name="kt_required" options="{'horizontal': true}" widget="radio" attrs="{'readonly':[('state','=', 'grant')]}" readonly="1"/>
                               
                            </group>
                        </group>
                        <group>
                           <group string="Employee Details">
                                <field name="department_id" options="{'no_create': True, 'no_edit':True, 'no_open':True}" readonly="1"/>
                                <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('department_id', '=', False)]}"/>
                                <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs= "{'invisible': [('division', '=', False)]}"/>
                                <field name="practise" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs= "{'invisible': [('section', '=', False)]}"/>
                                <field name="date_of_joining" widget="date" readonly="1"/>
                            </group>
                            <group>
                                <field name="resignation_ids">
                                    <tree create='0' edit='0' delete='0'>
                                        <field name="applicant_id"/>
                                        <field name="state"/>
                                        <field name="date"/>
                                        <field name="remark"/>
                                        <field name="last_working_date"/>
                                    </tree>
                                    <form create='0' edit='0' delete='0'> 
                                        <group>
                                            <field name="applicant_id" options="{'no_create': True, 'no_edit':True, 'no_open':True}"/>
                                            <field name="state"/>
                                            <field name="date"/>
                                            <field name="remark"/>
                                            <field name="last_working_date"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </group>
                        </div></div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="apply_rl_cancellation_view_tree" model="ir.ui.view">
            <field name="name">Apply RL Cancellation Tree</field>
            <field name="model">kw_resignation</field>
            <field name="priority" eval="35"/>
            <field name="arch" type="xml">
                <tree create='false' edit='false' delete='false'>
                    <field name="ra_cancel_aprv_btn_check" invisible='1'/>
                    <field name="report_check" invisible='1'/>
                    <!-- <field name="name" string="Ref No"/> -->
                    <field name="applicant_id" string="Applicant's Name"/>
                    <field name="department_id" options="{'no_create': True, 'no_edit':True, 'no_open':True}" readonly="1"/>
                    <field name="division" />
                    <field name="section"/>
                    <field name="practise" />
                    <field name="job_id"/>
                    <field name="create_date" string="Apply Date" widget="date"/>
                    <field name="reason" invisible="1"/>
                    <field name="effective_form" string="Effective From Date"/>
                    <field name="last_working_date" string='Last Date'/>
                    <field name="user_id" invisible="1"/>
                    <field name="forward_by" attrs="{'invisible':[('state','!=', 'forward')]}"/>
                    <field name="state"/>
                    <field name="action_to_be_taken_by"/>
                    <!-- <field name="action_taken_by_user_id" invisible='1'/> -->
                    <button name="take_action_rl_cancellation_button" type="object" string="Take Action" class="oe_highlight" attrs="{'invisible': [('state', '=', 'cancel')]}"/>
                </tree>
            </field>
        </record>

        <!-- Apply RL Cancellation action window -->
        <record id="apply_rl_cancellation_view_action" model="ir.actions.act_window">
            <field name="name">Resignation Cancellation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_resignation</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('apply_rl_cancellation_view_tree')})]"/>
            <field name="domain">[('state','=','waiting_for_rl_cancellation'),('applicant_id.parent_id.user_id','=',uid)]</field>
            <field name="context">{"report": False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available.
                </p><p>
                    RL Cancellation request will appear here .
                </p>
            </field>
        </record>

        <!-- RL cancellation remark wizard -->

        <record id="aprv_rl_cancel_remark_view" model="ir.ui.view">
        <field name="name">Cancel</field>
        <field name="model">kw_resignation</field>
        <field name="priority" eval="287"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").show();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <sheet>
                    <field name="budget_submit" invisible="1"/>
                    <field name="done_by_finance" invisible="1"/>
                    <field name="is_finance_user" invisible='1'/>
                    <field name="check_contract_create_user" invisible="1"/>
                    <field name="eos_status" invisible="1"/>
                    <field name="dept_head_check" invisible='1'/>
                    <field name="applicant_user_id_check" invisible='1'/>
                    <field name="logged_user" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_RA" invisible="1"/>
                    <field name="is_dept_manager" invisible="1"/>
                    <field name="ra_cancel_aprv_btn_check" invisible="1"/>
                    <field name="contract_check" invisible="1"/>
                    <field name="report_check" invisible="1"/>

                    <!-- New Fields -->
                    <field name="is_manager" invisible='1'/>
                    <field name="show_btn_apply" invisible="1"/>
                    <field name="show_btn_foward" invisible="1"/>
                    <field name="show_btn_confirm" invisible="1"/>
                    <field name="show_btn_hold" invisible="1"/>
                    <field name="hide_btn_cancel" invisible="1"/>
                    <field name="cancel_process" invisible="1"/>
                    <field name="show_cancel_apply" invisible="1"/>
                    <field name="show_cancel_foward" invisible="1"/>
                    <field name="show_cancel_confirm" invisible="1"/>
                    <field name="show_cancel_hold" invisible="1"/>

                    <field name="offboard_type_reg" invisible='1'/>
                    <field name="contract_closure_check" invisible='1'/>
                    <field name="retirement_check" invisible='1'/>
                    <field name="termination_check" invisible='1'/>
                    <field name="demise_check" invisible='1'/>
                    <field name="state" invisible='1'/>
                    <field name="aprv_rl_cancel_remark" required='1'/>

                </sheet>
                <footer>
                    <button name="btn_aprv_rl_cancel" string="Submit" type="object" class="btn-success" />
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- RL Cancellation Rejection Remark view -->
    <record id="rl_cancel_reject_remark_view" model="ir.ui.view">
        <field name="name">Cancel</field>
        <field name="model">kw_resignation</field>
        <field name="priority" eval="286"/>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").show();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <sheet>
                    <field name="done_by_finance" invisible="1"/>
                    <field name="budget_submit" invisible="1"/>
                    <field name="is_finance_user" invisible='1'/>
                    <field name="check_contract_create_user" invisible="1"/>
                    <field name="eos_status" invisible="1"/>
                    <field name="report_check" invisible="1"/>
                    <field name="contract_check" invisible="1"/>
                    <field name="dept_head_check" invisible='1'/>
                    <field name="logged_user" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_RA" invisible="1"/>
                    <field name="is_dept_manager" invisible="1"/>
                    <field name="ra_cancel_aprv_btn_check" invisible="1"/>

                    <!-- New Fields -->
                    <field name="is_manager" invisible='1'/>
                    <field name="show_btn_apply" invisible="1"/>
                    <field name="show_btn_foward" invisible="1"/>
                    <field name="show_btn_confirm" invisible="1"/>
                    <field name="show_btn_hold" invisible="1"/>
                    <field name="hide_btn_cancel" invisible="1"/>
                    <field name="cancel_process" invisible="1"/>
                    <field name="show_cancel_apply" invisible="1"/>
                    <field name="show_cancel_foward" invisible="1"/>
                    <field name="show_cancel_confirm" invisible="1"/>
                    <field name="show_cancel_hold" invisible="1"/>

                    <field name="offboard_type_reg" invisible='1'/>
                    <field name="contract_closure_check" invisible='1'/>
                    <field name="retirement_check" invisible='1'/>
                    <field name="termination_check" invisible='1'/>
                    <field name="demise_check" invisible='1'/>
                    <field name="state" invisible='1'/>
