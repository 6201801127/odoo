<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
          <template id="experience_letter_header_layout_standard">
            <div class="header" t-att-style="report_header_style">
                <div style="text-align:left">
                    <img src="/kw_recruitment/static/src/img/header_address_1.png" height="80px"/>
                    <img src="/kw_recruitment/static/src/img/header_logo_1.png"  height="56px" style="float:right;"/>
                </div>
            </div>

            <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div class="footer o_standard_footer">
                <div>
                    <img src="/kw_recruitment/static/src/img/footer_address_1.png" height="35px" style="float:left;margin-top:70px;"/>
                    <img src="/kw_recruitment/static/src/img/footer_logo_.png" height="50px" style="float:right;margin-top:50px;"/>
                </div>
            </div>
        </template>
        <record id="paperformat_expletter" model="report.paperformat">
            <field name="name">Experience Letter</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">2</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>
        <template id="report_letter_experience">
           <t t-call="web.html_container">
                <t t-as="o" t-foreach="docs">
                    <t t-call="kw_eos.experience_letter_header_layout_standard">
                        <div align="justify" class="page" height="200"  width="50"
                             style="font-size: 12pt;font-family:Arial,sans-serif;margin-left: 10%;margin-right:10%;">
                             <br/>
                            <div>
                                <p style="text-align: left;">
                                    Ref.:&amp;nbsp;<span t-field="o.ref_code"/>
                                    <br/>
                                    Date:&amp;nbsp;<span t-field="o.date" t-field-options="{&quot;format&quot;: &quot;MM dd YYYY&quot;}"/>
                                </p>
                                <br/>
                                <br/>
                                <p style="text-align: center;">
                                    <u>
                                        <b>TO WHOMSOEVER IT MAY CONCERN</b>
                                    </u>
                                </p>
                                <br/>
                                <br/>
                                <span>
                                    <p>This is to certify that <span t-field="o.salutation.shortcut"/> <span t-field="o.employee_id.name"/>
                                        was associated with CSM Technologies as <span t-field="o.job_id.name"/>.
                                        <t t-if='o.gender == "male"'>His</t> <t t-elif='o.gender == "female"'>Her</t> <t t-else='o.gender == "both"'>His/Her</t>
                                        particulars of
                                        <t t-if='o.exp_letter_type == "internship"'>internship</t><t t-else="">employment</t>
                                        are as below:
                                    </p>
                                    <table class="table table-sm table-bordered" style="font-size: 12pt;font-family:Arial,sans-serif;">
                                        <tr>
                                            <td style="width:250px;"><strong>Name</strong></td>
                                            <td><span t-field="o.employee_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Employee Id</strong></td>
                                            <td><span t-field="o.employee_id.emp_code"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Last Designation</strong></td>
                                            <td><span t-field="o.job_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Department</strong></td>
                                            <td><span t-field="o.department_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Date of Joining</strong></td>
                                            <td><span t-field="o.date_of_joining"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Date of Relieving</strong></td>
                                            <td><span t-field="o.last_working_date"/></td>
                                        </tr>
                                    </table>
                                    <t t-if='o.exp_letter_type == "complete"'>
                                        <p>
                                            During
                                            <t t-if='o.gender == "male"'>his</t><t t-elif='o.gender == "female"'>her</t><t t-else='o.gender == "both"'>his/her</t>
                                            service, we found
                                            <t t-if='o.gender == "male"'>him</t> <t t-elif='o.gender == "female"'>her</t> <t t-else='o.gender == "both"'>him/her</t>
                                            professional, sincere, knowledgeable and result oriented with theoretical and practical understanding of work requirements.
                                        </p>
                                    </t>
                                    <p style="text-align:left;">
                                        <t t-if='o.gender == "male"'>He</t><t t-elif='o.gender == "female"'>She</t><t t-else='o.gender == "both"'>He/She</t>
                                        has been advised to maintain strict confidentiality with respect to any proprietary and confidential information
                                        of the company that
                                        <t t-if='o.gender == "male"'>he</t><t t-elif='o.gender == "female"'>she</t><t t-else='o.gender == "both"'>he/she</t>
                                        may had access to during the
                                        <t t-if='o.exp_letter_type == "internship"'>internship</t><t t-else="">employment</t>.
                                    </p>
                                    <t t-if='o.clearance_type == "with_clearance"'>
                                        <p style="text-align:left;">
                                            <t t-if='o.gender == "male"'>He</t><t t-elif='o.gender == "female"'>She</t><t t-else='o.gender == "both"'>He/She</t>
                                            has been relieved from all the services, duties and responsibilities with us. There are no dues pending from
                                            <t t-if='o.gender == "male"'>his</t><t t-elif='o.gender == "female"'>her</t><t t-else='o.gender == "both"'>his/her</t>
                                            end.
                                        </p>
                                    </t>
                                    <p>
                                        We thank
                                        <t t-if='o.gender == "male"'>him</t><t t-elif='o.gender == "female"'>her</t><t t-else='o.gender == "both"'>him/her</t>
                                        for
                                        <t t-if='o.gender == "male"'>his</t><t t-elif='o.gender == "female"'>her</t><t t-else='o.gender == "both"'>his/her</t>
                                        contribution towards CSM Technologies and wish
                                        <t t-if='o.gender == "male"'>him</t><t t-elif='o.gender == "female"'>her</t><t t-else='o.gender == "both"'>him/her</t>
                                        all the best.
                                    </p>
                                    <br/>
                                    <p>
                                        Best Regards,
                                    </p>
                                    <p>
                                        <strong>For CSM Technologies </strong>
                                    </p>
                                    <p>
                                        <img src="/kw_recruitment/static/src/img/lagna_panda_signature.png" alt="signature" height="80px"/>
                                        <br/>
                                        Name: Lagna Panda
                                        <br/>
                                        Designation: CHRO
                                    </p>
                                </span>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report file="Experience Letter"
                id="report_letter_experience_letter"
                menu="False"
                model="kw_resignation_experience_letter"
                name="kw_eos.report_letter_experience"
                report_type="qweb-pdf"
                string="Experience Letter"
                paperformat="paperformat_expletter"
                print_report_name="'Experience-Letter-%s'%(object.employee_id.name.replace(' ', '-'))"
        />
    </data>
</openerp>