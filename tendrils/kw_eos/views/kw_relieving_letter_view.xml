<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="releiving_view_form" model="ir.ui.view">
            <field name="name">Relieving Letter Form</field>
            <field name="model">kw_reliving_letter</field>
            <field name="priority" eval="56"/>
            <field name="arch" type="xml">
                <form string="Releiving Letter">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" />
                                <field name="date_joining" />
                                <field name="date_resignation" />
                                <field name="date_last" />
                                <field name="communication_address" />
                                <field name="phone" />
                                <field name="email" />
                                <field name="actual_leaving_date" />
                                <field name="reg_type" />
                                <field name="reason" />
                                <field name="attachment_id" file_name="file_name"/>
                                <field name="file_name" invisible="1" />
                                <field name="remark" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="relieving_letter_view_tree" model="ir.ui.view">
            <field name="name">Relieving Letter Tree</field>
            <field name="model">kw_reliving_letter</field>
            <field name="priority" eval="57"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" string="Applicant Name"/>
                    <field name="date_joining"/>
                    <field name="actual_leaving_date" string="Date of Leaving"/>
                    <field name="reason" string="Porpose"/>
                    <field name="write_date" string="Action Date"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- kw_resignation_master action window -->
        <record id="releiving_letter_action" model="ir.actions.act_window">
            <field name="name">Relieving Letter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_reliving_letter</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
        
    </data>
</odoo>