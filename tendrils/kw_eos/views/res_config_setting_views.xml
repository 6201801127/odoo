<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_zoom_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.zoom</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="EOS Settings" string="Offboarding Settings" data-key="kw_eos"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>Offboarding Configuration Parameters</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="CC in Mail" id="cc_in_mail">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="notify_cc" string="CC Notify" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="notify_cc" widget="many2many_tags" options="{'no_edit': True,'no_create': True, 'no_open': True}"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="hrd_ids" string="HRD" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="hrd_ids" widget="many2many_tags" options="{'no_edit': True,'no_create': True, 'no_open': True}"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="new_hrd_ids" string="Other HRD" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="new_hrd_ids" widget="many2many_tags" options="{'no_edit': True,'no_create': True, 'no_open': True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box" title="Default Notice Period" id="def_notice_period">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="notice_period" string="Notice Period" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="notice_period"/>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                    <h2>Mode Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set default mode">
                            <div class="o_setting_left_pane">
                                <field name="module_offboarding_mode_status"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_offboarding_mode_status"/>
                                <div class="text-muted">
                                    Demo Mode
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Advance Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set default mode">
                            <div class="o_setting_left_pane">
                                <field name="advance_checklist"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="advance_checklist"/>
                                <div class="text-muted">
                                    If Advance checklist is enabled, then EOS advance data will be fetched from .net API
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
    <record id="kw_zoom_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_eos'}</field>
    </record>
</odoo>