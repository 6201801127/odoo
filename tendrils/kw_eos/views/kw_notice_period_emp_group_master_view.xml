<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name tree view -->
        <record id="kw_emp_group_master_tree" model="ir.ui.view">
            <field name="name">Group Tree</field>
            <field name="model">kw_emp_group_master</field>
            <field name="priority" eval="51"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- kw_emp_group_master action window -->
        <record id="kw_emp_group_master_action" model="ir.actions.act_window">
            <field name="name">Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_emp_group_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">['|',('active','=', True),('active','=', False)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p><p>
                    
                </p>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="kw_notice_period_master_master_tree" model="ir.ui.view">
            <field name="name">Notice period Tree</field>
            <field name="model">kw_notice_period_master</field>
            <field name="priority" eval="52"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="group_id" options='{"no_open": True, "no_create": True}'/>
                    <field name="grade_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}'/>
                    <field name="band_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}'/>
                    <field name="notice_period"/>
                </tree>
            </field>
        </record>

        <!-- kw_emp_group_master action window -->
        <record id="kw_notice_period_master_action" model="ir.actions.act_window">
            <field name="name">Notice Period</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_notice_period_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p><p>
                    
                </p>
            </field>
        </record>

    </data>
</odoo>