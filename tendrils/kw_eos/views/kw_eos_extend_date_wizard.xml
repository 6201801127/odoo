<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_eos_extend_date_wizard_form" model="ir.ui.view">
            <field name="name">kw_eos_extend_date.form</field>
            <field name="model">kw_eos_extend_date</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>
                        <group>
                            <group>
                                <field name="resignation_id" invisible="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="extend_date" style="height: 30px;resize: none;"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="validate_extend_date" type="object" class="btn btn-success btn-lg">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="kw_eos_extend_date_wizard_act_window" model="ir.actions.act_window">
            <field name="name">kw_eos_extend_date.window</field>
            <field name="res_model">kw_eos_extend_date</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="src_model">kw_advance_apply_salary_advance</field>
            <field name="view_id" ref="kw_eos_extend_date_wizard_form"/>
            <field name="target">new</field>
        </record>



    </data>
</odoo>