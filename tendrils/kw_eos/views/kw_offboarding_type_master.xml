        <!-- model.name tree view -->
        <record id="offboarding_type_master_view_tree" model="ir.ui.view">
            <field name="name">Off-Boarding Type Master Tree</field>
            <field name="model">kw_offboarding_type_master</field>
            <field name="priority" eval="53"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                    <field name="code"/>
                    <field name="user_type_id" widget='many2many_tags' options='{"no_open": True, "no_create": True}'/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- kw_offboarding_type_master action window -->
        <record id="kw_offboarding_type_master_action" model="ir.actions.act_window">
            <field name="name">Offboarding Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_offboarding_type_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">['|',('active','=',True),('active','=',False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
