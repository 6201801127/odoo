<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

        <!-- model.name tree view -->
        <record id="kw_reason_master_view_tree" model="ir.ui.view">
            <field name="name">Termination Reason Master Tree</field>
            <field name="model">kw_termination_reason_master</field>
            <field name="priority" eval="54"/>
            <field name="arch" type="xml">
                <tree editable="top"  default_order='sequence asc'>
                    <field name="sequence"  widget='handle'/>
                    <field name="name" required='1'/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Termination Reason Master action window -->
        <record id="kw_reason_master_view_action" model="ir.actions.act_window">
            <field name="name">Termination Reason Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_termination_reason_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">['|',('active','=',True),('active','=',False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>