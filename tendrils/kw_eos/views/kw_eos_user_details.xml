<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name form view -->
        <record id="kw_eos_user_details_view_form" model="ir.ui.view">
            <field name="name">kw_eos_user_details.view.form</field>
            <field name="model">kw_resignation</field>
            <field name="arch" type="xml">
                <form string="User Details" create='0' edit='0'>
                    <script>
                $(document).ready(function(){
                        $(".btn_exec_action").hide();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <style>
                    .o_form_view .o_group.o_inner_group > tbody > tr > td.o_td_label{min-width: 250px !important;}
                    </style>
                    <sheet>
                        <group>
                            <field name="contract_closure_check" invisible='1'/>
                            <field name="cancel_process" invisible='1'/>
                            <field name="offboard_type_reg" invisible='1'/>
                            <field name="applicant_user_id_check" invisible='1'/>
                            <field name="eos_status" invisible='1'/>
                            <field name="budget_submit" invisible='1'/>
                            <field name="check_contract_create_user" invisible='1'/>
                            <field name="done_by_finance" invisible='1'/>
                            <field name="dept_head_check" invisible='1'/>
                            <field name="is_finance_user" invisible='1'/>
                            <field name="show_btn_foward" invisible='1'/>
                            <field name="show_btn_apply" invisible='1'/>
                            <field name="retirement_check" invisible='1'/>
                            <field name="report_check" invisible='1'/>
                            <field name="resignation_ids">
                                <tree>
                                    <field name="applicant_id"/>
                                    <field name="state"/>
                                    <field name="date"/>
                                    <field name="remark"/>
                                    <field name="last_working_date"/>
                                </tree>
                                <form create='0' edit='0' delete='0'> 
                                    <group>
                                        <field name="applicant_id" options="{'no_create': True, 'no_edit':True, 'no_open':True}"/>
                                        <field name="state"/>
                                        <field name="date"/>
                                        <field name="remark"/>
                                        <field name="last_working_date"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- kw_eos_user_details tree view -->
        <record id="kw_eos_user_details_view_tree" model="ir.ui.view">
            <field name="name">kw_eos_user_details.view.tree</field>
            <field name="model">kw_resignation</field>
            <field name="arch" type="xml">
                <tree string="User Details" create='0' edit='0'>
                    <!-- Add your fields here -->
                    <field name="contract_closure_check" invisible='1'/>
                    <field name="cancel_process" invisible='1'/>
                    <field name="offboard_type_reg" invisible='1'/>
                    <field name="applicant_user_id_check" invisible='1'/>
                    <field name="eos_status" invisible='1'/>
                    <field name="budget_submit" invisible='1'/>
                    <field name="check_contract_create_user" invisible='1'/>
                    <field name="done_by_finance" invisible='1'/>
                    <field name="dept_head_check" invisible='1'/>
                    <field name="is_finance_user" invisible='1'/>
                    <field name="show_btn_foward" invisible='1'/>
                    <field name="show_btn_apply" invisible='1'/>
                    <field name="retirement_check" invisible='1'/>
                    <field name="report_check" invisible='1'/>
                    <field name="applicant_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="offboarding_type"/>
                    <field name="last_working_date"/>
                </tree>
            </field>
        </record>
        <record id="kw_eos_user_details" model="ir.actions.act_window">
            <field name="name">User Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_resignation</field>
            <field name="domain">['|','|',('applicant_id.department_id.manager_id.user_id','=',uid),('applicant_id.parent_id.user_id','=',uid),('applicant_id.user_id','=',uid)]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_eos_user_details_view_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('kw_eos_user_details_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="user_details_menu"
                  name="User Details"
                  parent="kw_eos.eos_reports_menu"
                  action="kw_eos_user_details" sequence="100"/>

    </data>
</odoo>