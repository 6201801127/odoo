<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name form view -->
        <record id="kw_resignation_experience_letter_form" model="ir.ui.view">
            <field name="name">Experience Letter Form</field>
            <field name="model">kw_resignation_experience_letter</field>
            <field name="arch" type="xml">
                <form string="Off-Boarding Resignation Experience Letter" delete="false" duplicate='false'>
                    <header>
                        <button name="%(report_letter_experience_letter)d"
                                class="oe_highlight"
                                string="Print Preview"
                                type="action"/>
                        <button name="button_send_email"
                                class="oe_highlight"
                                string="Send in Email" type="object"
                                attrs="{'invisible': [('state','=', 'sent')]}"/>
                        <button name="button_send_email"
                                class="oe_highlight"
                                string="Resend in Email" type="object"
                                attrs="{'invisible': [('state','=', 'draft')]}"/>
                        <button name="get_update_ex_employee_info"
                                class="btn-success"
                                string="Update Employee Record"
                                type="object"/>
<!--                        attrs="{'invisible': [('record_check','=',True)]}"-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                    </header>
                    <sheet>
                    <group>
                        <group>
                            <field name="gender" invisible="1"/>
                            <field name="exp_accept_bool" invisible="1"/>
                            <field name="record_check" invisible="1"/>

                            <field name="ref_code" readonly="0" required="0"/>
                            <field name="exp_letter_type" widget='radio' options="{'horizontal': true}"/>
                            <field name="generate_for" widget='radio' options="{'horizontal': true}"
                                   attrs="{'readonly': [('exp_accept_bool','=', True)]}"/>
                            <field name="clearance_type" widget='radio' options="{'horizontal': true}"/>

                            <field name="salutation" required="1"
                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <!--                                   attrs="{'readonly': [('exp_accept_bool','=', True)]}"-->
                            <field name="employee_id" options="{'no_open':True,'no_create':True,'no_edit':True}"
                                   attrs="{'readonly': [('exp_accept_bool','=', True)]}" required="1"/>
                            <field name="date" required="1"/>
                            <!-- <field name="alias"/> -->
                            <field name="company_id" options="{'no_open':True,'no_create':True,'no_edit':True}" invisible="1"/>
                            <field name="job_location_id" options="{'no_open':True,'no_create':True,'no_edit':True}" required="1"/>
                            <field name="employee_personal_email" required="1"/>
                            <field name="text_id"/>
                        </group>
                        <group>
                            <field name="base_branch_id" force_save="1" readonly="1"
                                   options="{'no_open':True,'no_create':True,'no_edit':True}"/>
                            <field name="department_id" force_save="1" readonly="1"
                                   options="{'no_open':True,'no_create':True,'no_edit':True}"/>
                            <field name="job_id" force_save="1" readonly="1"
                                   options="{'no_open':True,'no_create':True,'no_edit':True}"/>
                            <field name="report_employement_type" force_save="1" readonly="1"
                                   options="{'no_open':True,'no_create':True,'no_edit':True}"/>
                            <field name="emp_project_id" force_save="1" readonly="1" attrs="{'invisible':[('emp_project_id', '=', False)]}"
                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="start_date" force_save="1" readonly="1" attrs="{'invisible':[('start_date', '=', False)]}"/>
                            <field name="end_date" force_save="1" readonly="1" attrs="{'invisible':[('end_date', '=', False)]}" />
                            <field name="date_of_joining" force_save="1" readonly="1"/>
                            <field name="last_working_date" force_save="1" readonly="0" required="1"/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="kw_resignation_experience_letter_tree" model="ir.ui.view">
            <field name="name">Experience Letter Tree</field>
            <field name="model">kw_resignation_experience_letter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ref_code"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="employee_personal_email"/>
                    <field name="date"/>
                    <field name="date_of_joining"/>
                    <field name="last_working_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- model.name search view -->
        <record id="kw_resignation_experience_letter_search" model="ir.ui.view">
            <field name="name">Experience Letter search</field>
            <field name="model">kw_resignation_experience_letter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ref_code"/>
                    <field name="employee_id"/>
                    <field name="employee_personal_email"/>
                    <field name="date"/>
                    <field name="date_of_joining"/>
                    <field name="last_working_date"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- kw_offboarding_type_master action window -->
        <record id="kw_resignation_experience_letter_action" model="ir.actions.act_window">
            <field name="name">Experience Letter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_resignation_experience_letter</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Experience Letters"
                  parent="kw_eos.kw_resignation_menu_root"
                  id="menu_kw_resignation_experience_letters_main"
                  groups='kw_eos.group_kw_eos_manager'/>

        <menuitem name="Generate Experience Letter"
                  parent="kw_eos.menu_kw_resignation_experience_letters_main"
                  id="menu_generate_kw_resignation_experience_letters_main"
                  action="kw_resignation_experience_letter_action"
                  groups='kw_eos.group_kw_eos_manager'/>
    </data>
</odoo>