  <odoo>
  <!-- Action to Render the Template -->
    <record id="action_attrition_dashboard" model="ir.actions.client">
        <field name="name">Attrition Dashboard</field>
        <field name="tag">hr_dashboard_attrition</field>
    </record>
    <record id="view_hr_employee_attrition_tree" model="ir.ui.view">
        <field name="name">view.hr.employee.attrition.tree</field>
        <field name="model">hr.employee</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="1" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="emp_code"/>
                <field name="job_id" string="Designation"/>
                <field name="department_id"/>
                <field name="division"/>
                <field name="practise"/>
                <field name="section"/>
                <field name="gender"/>
                <field name="parent_id"/>
                <field name="date_of_joining"/>
                <field name="last_working_day"/>
            </tree>
        </field>
    </record>
    <record id="view_hr_employee_attrition_tree_reason" model="ir.ui.view">
            <field name="name">view.hr.employee.attrition.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="practise"/>
                    <field name="section"/>
                    <field name="gender"/>
                    <field name="parent_id"/>
                    <field name="date_of_joining" string='Joining Day'/>
                    <field name="last_working_day" string='Last Working Day'/>
                    <field name="resignation_reason" string="Resignation Reason"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_employee_attrition_all_tree_reason" model="ir.ui.view">
            <field name="name">view.hr.employee.attrition.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="practise"/>
                    <field name="section"/>
                    <field name="gender"/>
                    <field name="parent_id"/>
                    <field name="date_of_joining" string='Joining Day'/>
                    <field name="last_working_day" string='Last Working Day'/>
                    <field name="attrition_type" string='Attrition Type'/>
                    <field name="involuntary_reason" string='Involuntary Reason' attrs="{'invisible':[('attrition_type','=','vountary')]}"/>
                    <field name="resignation_reason" string="Voluntary Reason" attrs="{'invisible':[('attrition_type','!=','vountary')]}"/>
                </tree>
            </field>
        </record>

   
    <!-- Menu Item -->
    <menuitem id="attrition_dashboard_menu" name="Attrition Dashboard" groups="group_kw_eos_dashboard_user" parent="kw_resignation_menu_root" action="action_attrition_dashboard"/>

    <!-- CSS Styles -->
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/kw_eos/static/src/css/attrition_dashboard.css"/>
            <script type="text/javascript" src="/kw_eos/static/src/js/attrition_dashboard.js"></script>
            <script type="text/javascript" src="/kw_eos/static/src/js/user_guide_modal.js"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
            <script type="text/javascript" src="https://code.highcharts.com/modules/pyramid3d.js"></script>

        </xpath>
    </template>
</odoo>