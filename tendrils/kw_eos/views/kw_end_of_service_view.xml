<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="eos_form_view" model="ir.ui.view">
            <field name="name">EOS Form</field>
            <field name="model">kw_end_of_service</field>
            <field name="priority" eval="42"/>
            <field name="arch" type="xml">
                <form string="End of Service" create="false">
                    
                    <sheet>
                        <group>
                            <group>
                                <field name="logged_user" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="is_RA" invisible="1"/>
                                <field name="is_forward" invisible="1"/>

                                <!-- New Fields -->
                                <field name="show_btn_apply" invisible="1"/>
                                <field name="show_btn_foward" invisible="1"/>
                                <field name="show_btn_confirm" invisible="1"/>
                                <field name="show_btn_hold" invisible="1"/>

                                <label for="service_from" string="Service Period" />
                                <div class="address_format">
                                    <field name="service_from" style="width: 50%" widget="date" />
                                    <field name="service_to" style="width: 50%;float:right;" widget="date" />
                                </div>
                                <field name="address" />
                                <field name="phone" />
                                <field name="email" />
                                
                                <field name="eos_qa_lines" invisible="1">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name" />
                                        <field name="question_type" />
                                        <field name="answers_sub" attrs="{'invisible':[('question_type','=', 'obj')]}"/>
                                        <field name="answers_obj" attrs="{'invisible':[('question_type','=', 'sub')]}"/>
                                    </tree>
                                </field>
                                <field name="remark" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="eos_tree_view" model="ir.ui.view">
            <field name="name">EOS Tree</field>
            <field name="model">kw_end_of_service</field>
            <field name="priority" eval="41"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="service_from" />
                    <field name="service_to" />
                    <field name="address" invisible="1"/>
                    <field name="phone" />
                    <field name="email" />
                    <field name="applicant_id" string="Applied For"/>
                    <field name="state"/>
                    <field name="action_to_be_taken_by"/>
                </tree>
            </field>
        </record>

        <!-- kw_resignation_master action window -->
        <record id="eos_action" model="ir.actions.act_window">
            <field name="name">EOS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_end_of_service</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{"ra_eos": 1,}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p><p>
                    Create a new record.
                </p>
            </field>
        </record>

        <!-- model.name form view -->
        <record id="eos_take_action_form_view" model="ir.ui.view">
            <field name="name">EOS Form</field>
            <field name="model">kw_end_of_service</field>
            <field name="priority" eval="44"/>
            <field name="arch" type="xml">
                <form string="End of Service">
                    <sheet>
                        <group>
                            <group>
                                <field name="logged_user" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="is_RA" invisible="1"/>
                                <field name="is_forward" invisible="1"/>

                                <!-- New Fields -->
                                <field name="show_btn_apply" invisible="1"/>
                                <field name="show_btn_foward" invisible="1"/>
                                <field name="show_btn_confirm" invisible="1"/>
                                <field name="show_btn_hold" invisible="1"/>

                                <label for="service_from" string="Service Period" />
                                <div class="address_format">
                                    <field name="service_from" style="width: 50%" widget="date" />
                                    <field name="service_to" style="width: 50%;float:right;" widget="date" />
                                </div>
                                <field name="address" />
                                <field name="phone" />
                                <field name="email" />
                                
                                <field name="eos_qa_lines">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name" />
                                        <field name="question_type" />
                                        <field name="answers_sub" attrs="{'invisible':[('question_type','=', 'obj')]}"/>
                                        <field name="answers_obj" attrs="{'invisible':[('question_type','=', 'sub')]}"/>
                                    </tree>
                                </field>
                                <field name="remark" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="eos_take_action_tree_view" model="ir.ui.view">
            <field name="name">EOS Tree</field>
            <field name="model">kw_end_of_service</field>
            <field name="priority" eval="43"/>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="service_from" />
                    <field name="service_to" />
                    <field name="address" invisible="1"/>
                    <field name="phone" />
                    <field name="email" />
                    <field name="applicant_id" string="Applied For"/>
                    <!-- <field name="state"/> -->
                    <field name="action_to_be_taken_by"/>
                    <button name="take_action_button" type="object" string="Take Action" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <!-- kw_resignation_master action window -->
        <record id="eos_take_action_action" model="ir.actions.act_window">
            <field name="name">EOS Take Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_end_of_service</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('eos_take_action_tree_view')}),]"/>
            <field name="domain">[('action_to_be_taken_by.user_id','=',uid)]</field>
            <field name="context">{"ra_eos": 1,}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available.
                </p>
            </field>
        </record>     

             
    </data>
</odoo>