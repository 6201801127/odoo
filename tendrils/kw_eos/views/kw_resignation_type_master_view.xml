<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="resignation_type_master_view_form" model="ir.ui.view">
            <field name="name">Resignation Type Master Form</field>
            <field name="model">kw_resignation_master</field>
            <field name="priority" eval="58"/>
            <field name="arch" type="xml">
                <form string="Resignation Master">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="resignation_type_master_view_tree" model="ir.ui.view">
            <field name="name">Resignation Type Master Tree</field>
            <field name="model">kw_resignation_master</field>
            <field name="priority" eval="59"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="name" required="1"/>
                    <field name="code" />
                    <field name="active" widget="boolean_toggle"/>
                    <field name="is_visible_emp" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- kw_resignation_master action window -->
        <record id="resignation_type_master_action" model="ir.actions.act_window">
            <field name="name">Resignation Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_resignation_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">['|',('active','=',True),('active','=',False)]</field>
            <field name="context">{"report": False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>