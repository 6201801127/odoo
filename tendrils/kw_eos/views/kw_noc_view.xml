<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="noc_view_form" model="ir.ui.view">
            <field name="name">NOC Form</field>
            <field name="model">kw_noc</field>
            <field name="priority" eval="49"/>
            <field name="arch" type="xml">
                <form string="NOC">
                    <sheet>
                        <group>
                            <group>
                                <field name="applicant_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="department_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('department_id', '=', False)]}"/>
                                <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs= "{'invisible': [('division', '=', False)]}"/>
                                <field name="practise" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs= "{'invisible': [('section', '=', False)]}"/>
                                <field name="date_joining"/>
                                <field name="date_resignation"/>
                                <field name="date_last"/>
                                <field name="remark"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="noc_view_tree" model="ir.ui.view">
            <field name="name">NOC Tree</field>
            <field name="model">kw_noc</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="applicant_id"/>
                    <field name="date_joining"/>
                    <field name="date_resignation"/>
                </tree>
            </field>
        </record>

        <!-- kw_resignation_master action window -->
        <record id="noc_action" model="ir.actions.act_window">
            <field name="name">NOC</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_noc</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available
                </p>
            </field>
        </record>
        
    </data>
</odoo>