<odoo>
    <data>
        <record id="employement_correction_report_view_tree" model="ir.ui.view">
            <field name="name">Employement.correction.report.tree</field>
            <field name="model">employement_correction_report</field>
            <field name="arch" type="xml">
                <tree string="Employement Correction Report">
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="designation_id" />
                    <field name="last_working_day" />
                    <field name="reason"/>
                    <button name="employment_corr_btn" type="object" string="Update Employement" class="btn-danger"/>

                </tree>
            </field>
        </record>

        <record id="employement_correction_report_view_search" model="ir.ui.view">
            <field name="name">view.kw_analytic_report.search</field>
            <field name="model">employement_correction_report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Employement Correction Report">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="designation_id"/>
                    <field name="last_working_day"/>
                    <field name="reason"/>

                </search>
            </field>
        </record>

        <record id="employement_correction_report_view_action" model="ir.actions.act_window">
            <field name="name">Employement Correction Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employement_correction_report</field>
            <field name="view_mode">tree,search</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Employement Correction Report"
                  id="employement_correction_menu"
                  parent='kw_eos.eos_reports_menu'
                  sequence="200"
                  action="employement_correction_report_view_action"
                  groups="kw_eos.group_kw_eos_manager"/>
    </data>
</odoo>