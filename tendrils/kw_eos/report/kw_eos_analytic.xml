<odoo>
    <data>
        <record id="kw_analytic_report_view_pivot" model="ir.ui.view">
            <field name="name">Year On Year Exit Report.pivot</field>
            <field name="model">eos_analytic_report</field>
            <field name="arch" type="xml">
                <pivot string="Analytic Report">
                    <field name="fiscal_year" type="row"/>
                    <field name="quarterly" type="row"/>
                    <field name="department_id" type="col"/>
                    <field name="work_location_id"/>
                    <field name="joining_date" type="row"/>
                    <field name="last_working_day" type="row"/>
                    <field name="reg_reason" type="col"/>
                    <field name="gender" type="row"/>
                    <field name="budget" type="col"/>
                    <field name="tenure_at_csm" type="col"/>
                </pivot>
            </field>
        </record>
        <record id="kw_analytic_report_view_tree" model="ir.ui.view">
            <field name="name">Year On Year Exit Report.tree</field>
            <field name="model">eos_analytic_report</field>
            <field name="arch" type="xml">
                <tree string="Analytic Report" import="false" default_order='fiscal_year desc'>
                    <field name="fiscal_year"/>
                    <field name="quarterly"/>
                    <field name="department_id"/>
                    <field name="designation_id"/>
                    <field name="work_location_id"/>
                    <field name="employee_id"/>
                    <field name="reg_reason"/>
                    <field name="joining_date"/>
                    <field name="last_working_day"/>
                    <field name="gender"/>
                    <field name="budget"/>
                    <field name="tenure_at_csm"/>
                    <field name="tenure_months" invisible='1'/>

                </tree>
            </field>
        </record>

        <record id="kw_analytic_report_search_view" model="ir.ui.view">
            <field name="name">view.kw_analytic_report.search</field>
            <field name="model">eos_analytic_report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="eos_analytic_report_search">
                    <field name="employee_id"/>
                    <field name="fiscal_year"/>
                    <field name="quarterly"/>
                    <field name="department_id"/>
                    <field name="designation_id"/>
                    <field name="work_location_id"/>
                    <field name="reg_reason"/>
                    <field name="tenure_months" string="Tenure (Months)"/>
                    <filter name="tenure_less_than_3_months" string="Less than 3 Months" domain="[('tenure_months', '&lt;',3)]"/>
                    <filter name="tenure_3_to_6_months" string="3 to 6 Months" domain="['&amp;', ('tenure_months', '&gt;', 3), ('tenure_months', '&lt;', 6)]"/>
                    <filter name="tenure_6_to_12_months" string="6 to 12 Months" domain="[('tenure_months', '&gt;',6),('tenure_months', '&lt;',12)]"/>
                    <filter name="tenure_1_to_2_years" string="1 to 2 Years" domain="[('tenure_months', '&gt;',12),('tenure_months', '&lt;',24)]"/>
                    <filter name="tenure_more_than_2_years" string="More than 2 Years" domain="[('tenure_months', '&gt;',24)]"/>
                    <filter name="current_fiscal_year" string="Fiscal Year" context="{'group_by':'fiscal_year'}"/>
                    <filter name="department" string="Department" context="{'group_by':'department_id'}"/>
                    <filter name="worklocation" string="Work Location" context="{'group_by':'work_location_id'}"/>

            </search>
            </field>
        </record>

        <record id="kw_analytic_view_report_action" model="ir.actions.act_window">
            <field name="name">Year On Year Exit Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eos_analytic_report</field>
            <field name="context">{'search_default_current_fiscal_year': 1,'search_default_department': 1}</field>
            <field name="view_mode">tree,pivot,search</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Year On Year Exit Report"
                  id="kw_analytic_report_view_menu"
                  parent='kw_eos.eos_reports_menu'
                  sequence="100"
                  action="kw_analytic_view_report_action"
                  groups="kw_eos.group_kw_eos_manager"/>
    </data>
</odoo>