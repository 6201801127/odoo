        <record id="group_kw_offboarding_user_rule" model="ir.rule">
            <field name="name">Offboarding View user Group</field>
            <field name="model_id" ref="model_kw_resignation"/>
            <field name="domain_force">['|','|','|','|','|',('create_uid','=',user.id),('applicant_id.user_id','=',user.id),
                                        '&amp;', ('applicant_id.parent_id.user_id', '=', user.id), ('offboarding_type.name', 'not in', ['Termination', 'Demise', 'Contract Closure']),
                                        ('forward_to.user_id', '=', user.id),
                                        ('applicant_id.department_id.manager_id.user_id','=',user.id),
                                        ('applicant_id.sbu_master_id.representative_id.user_id','=',user.id)
                                        ]</field>
            <field name="groups" eval="[(4, ref('group_kw_eos_user'))]"/>
            <!-- <field name="perm_read" eval="True"/>           
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>     -->
        </record>

