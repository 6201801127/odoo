<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- explicit tree view definition Opening -->
		<record id="kw_newsletter_view_tree" model="ir.ui.view">
			<field name="name">Kw newsletter tree</field>
			<field name="model">kw_csm_page_history</field>
			<field name="arch" type="xml">
				<tree>
					<field name="mode"/>
					<field name="type"/>
					<field name="is_sent"/>
					<field name="news_letter_ids" widget="many2many_tags"/>
					<field name="create_date"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record model="ir.ui.view" id="kw_employee_score_form">
			<field name="name">Kw Employee Score form</field>
			<field name="model">kw_csm_page_history</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="mode"/>
								<field name="type"/>
								<field name="is_sent"/>
							</group>
							<field name="news_letter_ids">
								<tree>
									<field name="subject"/>
									<field name="type"/>
									<field name="url"/>
									<field name="body"/>
								</tree>
							</field>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<!-- actions views Opening-->
		<record id="kw_newsletter_actions_window" model="ir.actions.act_window">
			<field name="name">CSM Newsletter</field>
			<field name="res_model">kw_csm_page_history</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Newsletter...
				</p>
			</field>
		</record>
		<!-- actions views Ending-->

		<!-- actions views Ending-->
		<menuitem name="CSM Newsletter"
		          id="menu_newsletter_root"
		          parent="kw_usability.kw_usability_parent_menu_item"
		          web_icon="kw_csm_website_newsletter,static/description/icon.png"
		          sequence="1"
		          groups="kw_csm_website_newsletter.group_news_letter_manager"/>

		<menuitem name="Newsletter" id="newsletter_menu" parent="menu_newsletter_root"
		          action="kw_newsletter_actions_window" groups="kw_csm_website_newsletter.group_news_letter_manager"/>
	</data>
</odoo>