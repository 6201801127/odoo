<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record model="ir.module.category" id="module_category_debug_mode">
            <field name="name">Debug Mode</field>
            <field name="sequence">100</field>
        </record>

        <record model="res.groups" id="group_debug_mode_enable">
            <field name="category_id" ref="disable_debug_mode.module_category_debug_mode"/>
            <field name="name">Enable debug mode</field>
        </record>
        <record id="group_admin_debug" model="res.groups">
			<field name="name">Admin Debug</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
		</record>

        <record id="group_developer" model="res.groups">
			<field name="name">Developer</field>
            <field name="implied_ids" eval="[(4, ref('disable_debug_mode.group_debug_mode_enable'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
		</record>

        <record id = "developer_survey_user_access" model = "ir.rule">
            <field name = "name">Developer survey access</field>
            <field name = "model_id" ref = "survey.model_survey_user_input" />
            <field name = "groups" eval = "[(4, ref ('disable_debug_mode.group_debug_mode_enable'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id = "developer_survey_user_input_access" model = "ir.rule">
            <field name = "name">Developer survey input access</field>
            <field name = "model_id" ref = "survey.model_survey_user_input_line" />
            <field name = "groups" eval = "[(4, ref ('disable_debug_mode.group_debug_mode_enable'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
                
    </data>
</odoo>
