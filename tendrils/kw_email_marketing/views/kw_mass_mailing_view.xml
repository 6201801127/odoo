<odoo>
    <data>
        <record id="mass_mailing.mass_mailing_menu_root" model="ir.ui.menu">
            <field name="web_icon">kw_email_marketing,static/description/icon.png</field>
        </record>

        <record model="ir.ui.view" id="mass_mailing_contact_inherit_view">
            <field name="model">mail.mass_mailing.contact</field>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_contact_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[2]/div[hasclass('o_row')]" position="after">
                    <label for="opened"/>
                    <div class="o_row">
                        <field name="opened"/>
                    </div>
                    <label for="received"/>
                    <div class="o_row">
                        <field name="received"/>
                    </div>
                    <label for="clicked"/>
                    <div class="o_row">
                        <field name="clicked"/>
                    </div>
                </xpath>
                <field name="name" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="mass_mailing_contact_tree_inherit_view">
            <field name="model">mail.mass_mailing.contact</field>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_contact_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_blacklisted']" position="after">
                    <field name="opened"/>
                    <field name="received"/>
                    <field name="clicked"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>