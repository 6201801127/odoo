<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="project_wise_cr_sr_report_tree" model="ir.ui.view">
            <field name="name">project_wise_cr_sr_report_tree</field>
            <field name="model">project_wise_cr_sr_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="project_id"/>
                    <field name="project_code"/>
                    <!-- <field name="cr_type"/> -->
                    <field name="cr_count" sum="cr_count"/>
                    <field name="sr_count" sum="sr_count"/>
                </tree>
            </field>
        </record>
        <record id="project_wise_cr_sr_report_search_view" model="ir.ui.view">
            <field name="name">project_wise_cr_sr_search_view</field>
            <field name="model">project_wise_cr_sr_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="project_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="project_wise_cr_sr_report_graph">
            <field name="name">Project Wise CR SR Report (Graph)</field>
            <field name="model">project_wise_cr_sr_report</field>
            <field name="arch" type="xml">
                <graph string="Project Wise CR SR Report" type="bar">
                    <field name="project_id" type="row"/>
                    <field name="cr_count" type="measure" string="CR Count"/>
                    <field name="sr_count" type="measure" string="SR Count"/>
                </graph>
            </field>
        </record>



        

       

        <record id="project_wise_cr_sr_report_action" model="ir.actions.act_window">
            <field name="name">Project Wise CR SR Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_wise_cr_sr_report</field>
            <field name="view_mode">tree,graph</field>
            <field name="view_type">form</field>
        </record>


        <menuitem id="project_wise_cr_sr_report_menu"
                  name="Project Wise Report"
                  parent="menu_report_root"
                  groups="change_request_management.group_cr_configuration_manager,change_request_management.group_cr_manager"
                  action="project_wise_cr_sr_report_action"
                  sequence="12"/>
    </data>
</odoo>
