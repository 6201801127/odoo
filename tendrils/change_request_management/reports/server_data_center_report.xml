<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="cr_server_report_tree" model="ir.ui.view">
            <field name="name">cr_server_report.tree</field>
            <field name="model">cr_server_data_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="server_name"/>
                    <field name="server_type"/>

                    <field name="dedicated_shared"/>
                    <field name="location"/>
                    <field name="adminstrator_id"/>
                    <field name="os_type"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="cr_server_project_pivot">
            <field name="name">server_project_pivot</field>
            <field name="model">cr_server_data_report</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="location" type="col"/>
                    <field name="server_type" type="row"/>

                    <!-- <field name="server_type"  type="measure"/> -->
                    <field name="os_type" type="row"/>
                    <field name="adminstrator_id" type="row"/>

                </pivot>
            </field>
        </record>

        <record id="server_report_action" model="ir.actions.act_window">
            <field name="name">Server Report</field>
            <field name="res_model">cr_server_data_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('cr_server_report_tree')}),
                     (0, 0, {'view_mode': 'pivot', 'view_id': ref('cr_server_project_pivot')})]"/>
        </record>


        <menuitem id="cr_server_report_menu"
                  name="Server Report"
                  parent="menu_report_root"
                  groups="change_request_management.group_cr_configuration_manager,change_request_management.group_cr_manager"
                  action="server_report_action"
                  sequence="5"/>
    </data>
</odoo>
