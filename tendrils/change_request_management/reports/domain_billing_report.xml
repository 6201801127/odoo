<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="domain_bill_report_tree" model="ir.ui.view">
            <field name="name">domain_bill_report_tree</field>
            <field name="model">domain_billing_data_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import="0">
                    <field name="fy_year"/>
                    <field name="domain_name"/>
                    <field name="project_id"/>
                    <field name="registration_at"/>

                    <field name="bill_no"/>
                    <field name="account_head_id"/>
                    <field name="order_date"/>
                    <field name="billed_amount"/>
                    <field name="discount"/>
                    <field name="approved_amount" sum="Total"/>

                </tree>
            </field>
        </record>

        <record id="domain_bill_report_action" model="ir.actions.act_window">
            <field name="name">Domain Bill Report</field>
            <field name="res_model">domain_billing_data_report</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('domain_bill_report_tree')})]"/>
        </record>

        <!-- Domain Bill Menu -->
        <!-- <menuitem id="domain_billing_report_menu"
                  name="Domain Bill Report"
                  parent="menu_report_root"
                  action="domain_bill_report_action"
                  groups="change_request_management.group_cr_configuration_manager,change_request_management.group_cr_manager"
                  sequence="6"/> -->

        <record id="domain_filter_wizard_form" model="ir.ui.view">
            <field name="name">Domain Filter form</field>
            <field name="model">domain_billing_filter_wizard</field>
            <field name="arch" type="xml">
                <form duplicate='false'>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group string="">
                                <field name="dt_start"/>
                                <field name="dt_stop"/>

                                <field name="fy_year" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       invisible="1"/>

                                <field name="report_type_selection" required="1" widget="radio"
                                       options="{'horizontal': true}"/>
                                <!-- <field name="filter_month" attrs="{'invisible':[('report_type','not in',['Monthly'])]}"/> -->
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Generate Report" type="object" class="oe_highlight"
                                name="action_generate_report"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="domain_bill_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Domain Bill Report Download</field>
            <field name="res_model">domain_billing_filter_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'form', 'view_id': ref('domain_filter_wizard_form')})]"/>
        </record>

        <!-- Domain Bill Menu -->
        <menuitem id="domain_bill_download_wizard_menu"
                  name="Domain Bill Reports Download"
                  parent="menu_report_root"
                  action="domain_bill_report_wizard_action"
                  sequence="11"
                  groups="change_request_management.group_cr_configuration_manager,change_request_management.group_cr_manager"/>

        <!-- =======================MONTHLY BILL REPORT VIEW ============================-->

        <record id="monthly_bill_filter_report_tree" model="ir.ui.view">
            <field name="name">monthly_bill_filter_report_tree</field>
            <field name="model">monthly_billing_data_report_new</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import="0">
                    <field name="seq_no" invisible="1"/>
                    <field name="account_head_id"/>
                    <field name="bill_apr" sum="Total"/>
                    <field name="bill_may" sum="Total"/>
                    <field name="bill_jun" sum="Total"/>
                    <field name="bill_jul" sum="Total"/>
                    <field name="bill_aug" sum="Total"/>
                    <field name="bill_sep" sum="Total"/>
                    <field name="bill_oct" sum="Total"/>
                    <field name="bill_nov" sum="Total"/>
                    <field name="bill_dec" sum="Total"/>
                    <field name="bill_jan" sum="Total"/>
                    <field name="bill_feb" sum="Total"/>
                    <field name="bill_mar" sum="Total"/>
                    <field name="total_bill" sum="Total"/>
                    <!-- <field name="approved_amount" sum="Total"/> -->
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="monthly_bill_filter_report_action">
            <field name="name">Domain Bill Monthly Report</field>
            <field name="res_model">monthly_billing_data_report_new</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('monthly_bill_filter_report_tree')})]"/>
        </record>

        <!-- Domain Bill Menu -->
        <!-- <menuitem id="domain_billing_monthly_filter_menu"
