        <!-- ===================================DOMAIN WISE REPORT VIEW=================================================== -->
        <record id="domain_wise_filter_report_tree" model="ir.ui.view">
            <field name="name">domain_wise_filter_report_tree</field>
            <field name="model">domain_wise_data_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import="0">
                    <field name="domain_name"/>
                    <field name="account_head_id"/>
                    <field name="bill_no"/>
                    <field name="order_date"/>
                    <field name="billed_amount" sum="Total"/>
                    <field name="discount" sum="Total"/>
                    <field name="approved_amount" sum="Total"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="domain_wise_filter_report_action">
            <field name="name">Domain Wise Report</field>
            <field name="res_model">domain_wise_data_report</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('domain_wise_filter_report_tree')})]"/>
        </record>

        <!-- Domain Bill Menu -->
