<odoo>
    <data>

        <record id="cr_management_sequence_report_tree" model="ir.ui.view">
            <field name="name">cr_management_report.tree</field>
            <field name="model">kw_cr_environment_sequence</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='0'>
                    <field name="project_id"/>
                    <field name="prod_env_count" class='center-val'/>
                    <field name="dev_env_count" class='center-val'/>
                    <field name="test_env_count" class='center-val'/>
                    <field name="stag_env_count" class='center-val'/>
                    <field name="audit_env_count" class='center-val'/>
                    <field name="demo_env_count" class='center-val'></field>
                    <field name="preprod_env_count" class='center-val'></field>
                    <field name="prototype_env_count" class='center-val'></field>
                    <field name="total_count" sum="Total" class='center-val'/>
                    <field name="sr_prod_env_count" class='center-val'/>
                    <field name="sr_stag_env_count" class='center-val'/>
                    <field name="sr_test_env_count" class='center-val'/>
                    <field name="sr_dev_env_count" class='center-val'/>
                    <field name="sr_audit_env_count" class='center-val'/>
                    <field name="sr_demo_env_count" class='center-val'></field>
                    <field name="sr_preprod_env_count" class='center-val'></field>
                    <field name="sr_prototype_env_count" class='center-val'></field>
                    <field name="sr_total_count" sum="Total" class='center-val'/>
                </tree>
            </field>
        </record>
        <record id="cr_sequence_report_action" model="ir.actions.act_window">
            <field name="name">Project Environment Report</field>
            <field name="res_model">kw_cr_environment_sequence</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('cr_management_sequence_report_tree')})]"/>
        </record>

        <menuitem name="Project Environment statistics" id="kw_environment_sequence_menu" parent = 'menu_report_root' action = 'cr_sequence_report_action'
        sequence="19" groups="change_request_management.group_cr_manager"/>

    </data>
</odoo>