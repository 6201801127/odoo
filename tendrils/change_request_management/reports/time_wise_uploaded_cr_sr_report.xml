        <record id="time_range_wise_cr_sr_report_action" model="ir.actions.act_window">
            <field name="name">Time Phase Wise CR SR Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">time_range_wise_cr_sr_report</field>
            <field name="view_mode">tree,graph</field>
            <field name="view_type">form</field>
        </record>


        <menuitem id="time_range_wise_cr_sr_report_menu"
                  name="Time Phase Wise Report"
                  parent="menu_report_root"
                  groups="change_request_management.group_cr_configuration_manager,change_request_management.group_cr_manager"
                  action="time_range_wise_cr_sr_report_action"
                  sequence="13"/>
    </data>
</odoo>
