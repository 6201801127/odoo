<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="time_range_wise_cr_sr_report_tree" model="ir.ui.view">
            <field name="name">time_range_wise_cr_sr_report.tree</field>
            <field name="model">time_range_wise_cr_sr_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="project_id"/>
                    <field name="morning_cr_count" sum="morning_cr_count"/>
                    <field name="morning_sr_count" sum="morning_sr_count"/>
                    <field name="afternoon_cr_count" sum="afternoon_cr_count"/>
                    <field name="afternoon_sr_count" sum="afternoon_sr_count"/>
                    <field name="evening_cr_count" sum="evening_cr_count"/>
                    <field name="evening_sr_count" sum="evening_sr_count"/>
                    <field name="night_cr_count" sum="night_cr_count"/>
                    <field name="night_sr_count" sum="night_sr_count"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="time_range_wise_cr_sr_report_graph">
            <field name="name">Time Range Wise CR SR Report (Graph)</field>
            <field name="model">time_range_wise_cr_sr_report</field>
            <field name="arch" type="xml">
                <graph string="Time Range Wise CR SR Report" type="bar">
                    <field name="project_id" type="row"/>
                    <field name="morning_cr_count" type="measure" string="Morning CR Count"/>
                    <field name="afternoon_cr_count" type="measure" string="Afternoon CR Count"/>
                    <field name="evening_cr_count" type="measure" string="Evening CR Count"/>
                    <field name="night_cr_count" type="measure" string="Night CR Count"/>
                    <field name="morning_sr_count" type="measure" string="Morning SR Count"/>
                    <field name="afternoon_sr_count" type="measure" string="Afternoon SR Count"/>
                    <field name="evening_sr_count" type="measure" string="Evening SR Count"/>
                    <field name="night_sr_count" type="measure" string="Night SR Count"/>
                </graph>
            </field>
        </record>
        
        <record id="time_range_wise_cr_sr_report_search_view" model="ir.ui.view">
            <field name="name">time_range_wise_cr_sr_report.search</field>
            <field name="model">time_range_wise_cr_sr_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="project_id" string="Project"/>
                </search>
            </field>
        </record>



