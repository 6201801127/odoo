<odoo>
    <data>
        <record model="ir.ui.view" id="cr_cancel_wizard_view">
            <field name="name">CR Rollback</field>
            <field name="model">cr_cancel_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="cancel_btn" type="object" string="Cancelled" class="btn-danger" context="{'button':'Cancel'}"/>
                                <!-- <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/> -->
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

