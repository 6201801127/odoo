<odoo>
    <data>
        <record model="ir.ui.view" id="kw_project_cr_configuration_list">
            <field name="name">kw_project_cr_configuration list</field>
            <field name="model">kw_project_cr_configuration</field>
            <field name="arch" type="xml">
                <tree editable='top' import='0'>
                    <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                    <field name="employee_ids" widget='many2many_tags' required="1"
                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="kw_project_cr_configuration_action">
            <field name="name">CR Project-User Tagging</field>
            <field name="res_model">kw_project_cr_configuration</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem name="CR Project-User Tagging"
                  id="kw_project_cr_configuration_menu"
                  parent='kw_environment_master_root_menu'
                  action='kw_project_cr_configuration_action'
                  sequence="4"/> -->
    </data>
</odoo>
