<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="kw_domain_bill_details_form" model="ir.ui.view">
            <field name="name">kw_domain_bill_details form</field>
            <field name="model">kw_domain_bill_details</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="domain_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="client_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="registration_with" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="bill_date" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="bill_no" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                        <group>
                            <field name="order_details_ids">
                                <tree editable="bottom">
                                    <field name="account_head_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="order_date" />
                                    <field name="billed_amount" />
                                    <field name="discount" />
                                    <field name="approved_amount" force_save="1"/>
                                </tree>
                                </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_domain_bill_details_list">
            <field name="name">kw_domain_bill_details list</field>
            <field name="model">kw_domain_bill_details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="domain_name"/>
                    <field name="client_name"/>
                    <field name="registration_with" />
                    <field name="bill_date"/>
                    <field name="bill_no"/>
        
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="kw_domain_bill_details_action">
            <field name="name">Bill Details</field>
            <field name="res_model">kw_domain_bill_details</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- <menuitem name="Bill Details"
                  id="kw_domain_bill_details_menu"
                  parent='kw_environment_master_root_menu'
                  action='kw_domain_bill_details_action'
                  sequence="14"/> -->

        <!-- Domain Bill Views -->
        <record id="kw_domain_bill_form" model="ir.ui.view">
            <field name="name">kw_domain_bill_form</field>
            <field name="model">kw_domain_bill</field>
            <field name="arch" type="xml">
                <form duplicate="0"  delete='0' import='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="fy_year" required="0"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="domain_server_bill_id" required="1"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="account_head_id" required="1"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="order_date" required="1"/>
                                <field name="bill_no" required="1"/>
                                <field name="billed_amount"/>
                                <field name="discount"/>
                                <field name="approved_amount" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_domain_bill_list">
            <field name="name">kw_domain_bill_list</field>
            <field name="model">kw_domain_bill</field>
            <field name="arch" type="xml">
                <tree  delete='0' import='0'>
                    <field name="fy_year" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="domain_server_bill_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="account_head_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="order_date"/>
                    <field name="bill_no"/>
                    <field name="billed_amount" sum="Total"/>
                    <field name="discount" sum="Total"/>
                    <field name="approved_amount" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="kw_domain_bill_search_view" model="ir.ui.view">
            <field name="name">kw_domain_bill_search</field>
            <field name="model">kw_domain_bill</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <search string="Environment Search">
                    <field name="account_head_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="order_date"/>
                    <field name="bill_no"/>
                    <field name="billed_amount"/>
                    <field name="discount"/>
                    <field name="approved_amount"/>
                    <filter string="This Year" domain="[('order_date', 'like', context_today().strftime('%Y'))]" name="current_year_claim"/>
                    <filter string="This Month" domain="[('order_date', 'like', context_today().strftime('%Y-%m'))]" name="this_month_order_date"/>
                    <filter string="Order Date" name="filter_order_date" date="order_date"/>

                </search>
            </field>
        </record>

        <!-- Action for Domain Bill -->
        <record model="ir.actions.act_window" id="kw_domain_bill_action">
            <field name="name">Domain Billing Master</field>
            <field name="res_model">kw_domain_bill</field>
            <field name="view_mode">tree,form,search</field>
        </record>

        <!-- Domain Bill Menu -->
        <menuitem name="Domain Billing Master"
                  id="domain_billing_menu"
                  parent="kw_environment_master_root_menu"
                  action="kw_domain_bill_action"
                  sequence="15"/>

    </data>
</odoo>
