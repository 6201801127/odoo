<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="kw_environment_master_form" model="ir.ui.view">
            <field name="name">kw_environment_master form</field>
            <field name="model">kw_environment_master</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="is_approval_required"/>
                                <!-- <field name="sequence" invisible = '1' required='1'/> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_environment_master_list">
            <field name="name">kw_environment_master list</field>
            <field name="model">kw_environment_master</field>
            <field name="arch" type="xml">
                <tree import='0' editable='top'>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_approval_required" widget="boolean_toggle"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="kw_environment_master_action">
            <field name="name">Environment Master</field>
            <field name="res_model">kw_environment_master</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        
        <!-- menu categories -->
        <menuitem name="Environment Master"
                  id="kw_environment_master_sbu_menu"
                  parent='cr_master_config_menu'
                  action='kw_environment_master_action'
                  sequence="1"/>

    </data>
</odoo>
