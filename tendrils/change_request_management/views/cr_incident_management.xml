<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="kw_incident_environment_management_form" model="ir.ui.view">
            <field name="name">kw_incident_environment_management form</field>
            <field name="model">kw_incident_environment_management</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                                       required="1"/>
                                <field name="date_time_incident"/>
                                <field name="date_time_resolution"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="incident_type"/>
                                <field name="any_evidence"/>
                                <field name="any_mitigation"/>
                                <field name="description_incident"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_incident_environment_management_list">
            <field name="name">kw_project_environment_management list</field>
            <field name="model">kw_incident_environment_management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="date_time_incident"/>
                    <field name="date_time_resolution"/>
                    <field name="incident_type"/>
                    <field name="any_evidence"/>
                    <field name="any_mitigation"/>
                    <field name="description_incident"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="kw_incident_environment_management_action">
            <field name="name">Incident Management</field>
            <field name="res_model">kw_incident_environment_management</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Incident Management"
                  id="incident_management_menu"
                  parent='kw_environment_master_root_menu'
                  action='kw_incident_environment_management_action'
                  sequence="10"/>

    </data>
</odoo>
