<odoo>
    <data>
        <record id="cr_sr_dashboard_action" model="ir.actions.client">
            <field name="name">CR SR Dashboard</field>
            <field name="tag">cr_sr_dashboard</field>
        </record>
        <menuitem parent="change_request_management.change_request_management_root_menu"
                  id="cr_service_dashboard_menu"
                  groups="change_request_management.group_cr_manager"
                  name="Dashboard" sequence="11"/>

        <menuitem parent="cr_service_dashboard_menu"
                  id="cr_sr_dashboard_menu"
                  name="CR SR dashboard"
                  action="cr_sr_dashboard_action"/>

    </data>
    <template id="cr_sr_assets_backend" name="CR SR dashboard" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/change_request_management/static/src/js/cr_sr_dashboard.js"/>
            <link rel="stylesheet" href="/change_request_management/static/src/css/cr_sr_dashboard.css"/>
        </xpath>
    </template>
</odoo>