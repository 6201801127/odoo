<odoo>
    <data>
        <record model="ir.ui.view" id="cr_rollbacked_wizard_view">
            <field name="name">CR Rollback</field>
            <field name="model">cr_rollbacked_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="rollback_btn" type="object" string="Rollbacked" class="btn-danger"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>