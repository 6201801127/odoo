<odoo>
    <data>
        <record model="ir.ui.view" id="cr_uploaded_wizard_view">
            <field name="name">CR Upload</field>
            <field name="model">cr_uploaded_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="remark" required='1'/>
                                <field name="project_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                                <field name="prject_category_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}" />
                                <field name="parent_task_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}" domain="[('id','=',0)]"/>
                                <field name="task_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}" domain="[('id','=',0)]"/>
                                <field name="time_spent" widget="float_time"/>
                                <field name="date_of"/>
                            </group>
                        </group>
                        <footer>
                            <center>
                                <button name="upload_btn" type="object" string="Upload" class="btn-primary"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>