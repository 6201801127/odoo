<odoo>
    <data>
        <record id="kickoff_config_list" model="ir.ui.view">
            <field name="name">Kickoff config list</field>
            <field name="model">kw_cr_kickoff</field>
            <field name="arch" type="xml">
                <tree default_order='id desc'>
                    <field name="type_kickoff"/>
                    <field name="date_of_start"/>
                </tree>
            </field>
        </record>
        <record id="kickoff_master_form" model="ir.ui.view">
            <field name="name">Kickoff config form</field>
            <field name="model">kw_cr_kickoff</field>
            <field name="arch" type="xml">
                <form duplicate='false'>
                    <sheet>
                        <group>
                            <group string="">
                                <field name="type_kickoff"/>
                                <field name="date_of_start"/>
                                <field name="project_cr_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kickoff_master1_action_window" model="ir.actions.act_window">
            <field name="name">Kickoff Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_cr_kickoff</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('kickoff_config_list')}),
                     (0, 0, {'view_mode': 'form', 'view_id': ref('kickoff_master_form')})]"/>
        </record>

        <!-- <menuitem name="Kickoff Master"
                  id="kickoff1_master_config_menu"
                  parent='cr_master_config_menu'
                  action="kickoff_master1_action_window"
                  groups='change_request_management.group_cr_manager,change_request_management.group_cr_officer'
                  sequence="3"/> -->

        <record id="project_master_config_list" model="ir.ui.view">
            <field name="name">project config list</field>
            <field name="model">kw_cr_project_configuration</field>
            <field name="arch" type="xml">
                <tree default_order='id desc'>
                    <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="project_code"/>
                    <field name="scm_data"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
        <record id="project_config_management_form" model="ir.ui.view">
            <field name="name">Project config form</field>
            <field name="model">kw_cr_project_configuration</field>
            <field name="arch" type="xml">
                <form duplicate='1'>
                    <header>
                        <!-- Header content goes here if needed -->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="project_code"/>
                                <field name="scm_data"/>
                                <field name="email"/>
                                <field name="ssl"/>
                                <field name="sms"/>
                                <field name="remarks"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="kickoff_ids">
                                    <tree editable="bottom">
                                        <field name="type_kickoff"/>
                                        <field name="date_of_start"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="domain_ids">
                                    <tree editable="bottom">
                                        <field name="domain_id"
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="url_type_id"
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <group>
                            <field name="environment_ids">
                                <tree editable="bottom">
                                    <field name="environment_id"
                                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                    <field name="infra_details"
                                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                    <field name="server_id" string="Server Name"
                                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                    <field name="cpu" sum="Total"/>
                                    <field name="ram_p" sum="Total"/>
                                    <field name="dedicate_share"/>
                                    <field name="application_id"
                                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                    <field name="database_id"
                                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                    <field name="purpose"/>
                                    <field name="datacenter_id"
                                           options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                    <field name="remark"/>

                                </tree>
                            </field>
                            <!-- <field name="domain_ids"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="cr_project_wizard_form_view" model="ir.ui.view">
            <field name="name">PDF Wizard</field>
            <field name="model">pdf_download_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <b>
                                <h2 class="text-left text-primary mb-3">Are you sure you want to Download ?</h2>
                            </b>
                            <br/>
                            <br/>
                            <button name="action_to_download_excel" type="object" class="btn-success mr-2">Download</button>
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                            <footer></footer>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="project_config_report"
                    name="Project data Excel"
                    src_model="kw_cr_project_configuration"
                    res_model="pdf_download_wizard"
                    view_type="form" view_mode="form" view_id="cr_project_wizard_form_view"
                    key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}"/>
        <record id="project_master_action_window" model="ir.actions.act_window">
            <field name="name">Project Configuration</field>
            <field name="res_model">kw_cr_project_configuration</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('project_master_config_list')}),
                     (0, 0, {'view_mode': 'form', 'view_id': ref('project_config_management_form')})]"/>
        </record>

        <!--CR Management Take Action menu-->
        <menuitem name="Project Configuration"
                  id="project_master_config_menu"
                  parent='kw_environment_master_root_menu'
                  action="project_master_action_window"
                  groups='change_request_management.group_cr_manager,change_request_management.group_cr_configuration_manager'
                  sequence="13"/>
    </data>
</odoo>
