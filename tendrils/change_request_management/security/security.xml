<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_change_request_management">
            <field name="name">CR Management</field>
            <field name="description">User access level for CR Management</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_cr_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_change_request_management"/>
        </record>
        <record id="group_cr_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_change_request_management"/>
        </record>

        <record id="group_cr_mis_user" model="res.groups">
            <field name="name">MIS User</field>
            <field name="category_id" ref="module_change_request_management"/>
        </record>
        <record id="group_cr_configuration_manager" model="res.groups">
            <field name="name">Configuration Manager</field>
            <field name="category_id" ref="module_change_request_management"/>
        </record>
        <record id="group_cr_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_change_request_management"/>
            <field name="implied_ids" eval="[(4,ref('group_cr_user')),(4,ref('group_cr_officer'))]"/>
        </record>

        <record id="group_cr_test_lead" model="res.groups">
            <field name="name">Test Lead</field>
            <field name="category_id" ref="module_change_request_management"/>
        </record>


    </data>
</odoo>
