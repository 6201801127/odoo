<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="kw_training_my_training_kanban_view" model="ir.ui.view">
        <field name="model">kw_training</field>
        <field name="inherit_id" ref="kw_training.kw_training_my_training_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_training_test']" position="after">
                <field name="online_training_available" invisible="1"/>
                <button name="join_online_meeting" type="object" class="btn btn-md btn-warning mt-2" attrs="{'invisible': [('online_training_available','=',False)]}">
                    Join Online Training
                </button>
            </xpath>
        </field>
    </record>
</data>
</odoo>