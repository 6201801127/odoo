<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="view_kw_training_schedule_create_tag_meeting_form" model="ir.ui.view">
            <field name="name">view.kw_training_schedule.meeting_action.form</field>
            <field name="model">kw_training_schedule</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false">
                    <group string="Choose a meeting to tag.">
                        <group>
                            <field name="meeting_id" string="Choose Meeting"
                            options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <button type="object" name="schedule_meeting" 
                        attrs="{'invisible':[('meeting_id','!=',False)]}" 
                        class="text-center btn btn-primary">
                                Create Meeting
                        </button>
                    </group>
                    <footer>
                        <button type="object" name="write" class="text-center btn btn-primary">Save</button>
                           <![CDATA[&nbsp;]]>      
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_kw_training_schedule_edit_remove_meeting_form" model="ir.ui.view">
            <field name="name">view.kw_training_schedule.meeting_action.form</field>
            <field name="model">kw_training_schedule</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="true">
                    <group string="Meeting Details">
                        <group>
                            <field name="attendance_id" invisible="1"/>
                            <field name="meeting_id" attrs="{'readonly':[('attendance_id','!=',False)]}"
                            options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button type="object" name="view_meeting"                                                                                                                                                                                                                                                                                                       
                        invisible="context.get('hide_edit',False)"
                        attrs="{'invisible':[('meeting_id','=',False)]}" 
                        class="text-center btn btn-primary">Edit Meeting</button>
                                    <![CDATA[&nbsp;]]>
                        <button type="object" name="write" invisible="context.get('hide_save',False)"
                        class="text-center btn btn-primary">Save</button>
                                    <![CDATA[&nbsp;]]>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>