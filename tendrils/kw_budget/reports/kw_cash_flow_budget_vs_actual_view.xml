<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_cash_flow_budget_vs_actual_report_tree" model="ir.ui.view">
            <field name="name">Cash Flow Report</field>
            <field name="model">kw_cash_flow_budget_vs_actual_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false' class="customer_tree">
                    <field name="particulars"/>
                    <field name="fiscal_year_id"/>
                    <field name="budget_type" invisible="1"/>
                    <field name="name_of_expense"/>
                    <field name="name"/>
                    <field name="account_code_id" invisible='1'/>
                    <field name="account_code"/>
                    <field name="account_name"/>
                    <field name="total_budget" sum="Total" class="revenue_month_total"/>
                    <field name="actual_amount" sum="Total" class="revenue_month_class_total"/> 
                    <field name="apr_budget" sum="Total"/>
                    <field name="april_actual" sum="Total" class="actual_budget_class"/>
                    <field name="may_budget" sum="Total"/>
                    <field name="may_actual" sum="Total" class="actual_budget_class"/>
                    <field name="jun_budget" sum="Total"/>
                    <field name="june_actual" sum="Total" class="actual_budget_class"/>
                    <field name="jul_budget" sum="Total"/>
                    <field name="july_actual" sum="Total" class="actual_budget_class"/>
                    <field name="aug_budget" sum="Total"/>
                    <field name="august_actual" sum="Total" class="actual_budget_class"/>
                    <field name="sep_budget" sum="Total"/>
                    <field name="september_actual" sum="Total" class="actual_budget_class"/>
                    <field name="oct_budget" sum="Total"/>
                    <field name="october_actual" sum="Total" class="actual_budget_class"/>
                    <field name="nov_budget" sum="Total"/>
                    <field name="november_actual" sum="Total" class="actual_budget_class"/>
                    <field name="dec_budget" sum="Total"/>
                    <field name="december_actual" sum="Total" class="actual_budget_class"/>
                    <field name="jan_budget" sum="Total"/>
                    <field name="january_actual" sum="Total" class="actual_budget_class"/>
                    <field name="feb_budget" sum="Total"/>
                    <field name="february_actual" sum="Total" class="actual_budget_class"/>
                    <field name="mar_budget" sum="Total"/>
                    <field name="march_actual" sum="Total" class="actual_budget_class"/>
                    <button type="object" name="action_open_budget_entries" string="Entries..."
                            icon="fa-arrow-circle-o-right"/>
                </tree>
            </field>
        </record>

        <record id="kw_cash_flow_budget_vs_actual_report_pivot" model="ir.ui.view">
            <field name="name">Cash Flow Report Pivot</field>
            <field name="model">kw_cash_flow_budget_vs_actual_report</field>
            <field name="arch" type="xml">
                <pivot string="Cash Flow Report Pivot">
                    <field name="fiscal_year_id" type="row"/>
                    <field name="budget_type" type="row"/>
                    <field name="name_of_expense" type="row"/>
                    <field name="apr_budget" type="measure" sum="Total" string="Apr Budget"/>
                    <field name="may_budget" type="measure" sum="Total" string="May Budget"/>
                    <field name="jun_budget" type="measure" sum="Total" string="Jun Budget"/>
                    <field name="jul_budget" type="measure" sum="Total" string="Jul Budget"/>
                    <field name="aug_budget" type="measure" sum="Total" string="Aug Budget"/>
                    <field name="sep_budget" type="measure" sum="Total" string="Sep Budget"/>
                    <field name="oct_budget" type="measure" sum="Total" string="Oct Budget"/>
                    <field name="nov_budget" type="measure" sum="Total" string="Nov Budget"/>
                    <field name="dec_budget" type="measure" sum="Total" string="Dec Budget"/>
                    <field name="jan_budget" type="measure" sum="Total" string="Jan Budget"/>
                    <field name="feb_budget" type="measure" sum="Total" string="Feb Budget"/>
                    <field name="mar_budget" type="measure" sum="Total" string="Mar Budget"/>
                    <field name="total_budget" type="measure" sum="Total" string="Total Budget"/>
                </pivot>
            </field>
        </record>



        <record id="kw_cash_flow_budget_vs_actual_report_view_search" model="ir.ui.view">
            <field name="name">Cash Flow Report Search</field>
            <field name="model">kw_cash_flow_budget_vs_actual_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="fiscal_year_id"/>
                    <field name="budget_type"/>
                    <field name="name_of_expense"/>
                    <field name="name"/>
                    <!-- <filter name="next_fy_filter" string="Next Financial Year" domain="[('fiscal_year_id.date_start', '&gt;', context_today().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/> -->
                    <filter name="fiscal_year_filter" string="Current Financial Year" domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/>
                    
                    <group expand="0" string="Group By">
                        <filter name="budget_type" string="Budget type" context="{'group_by':'budget_type'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="kw_cash_flow_budget_vs_actual_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">5.Cash flow/2.Cash Flow Budget Vs Actual</field>
            <field name="res_model">kw_cash_flow_budget_vs_actual_report</field>
            <field name="view_mode">tree,search,pivot</field>
            <field name="context">{'search_default_fiscal_year_filter': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Cash Flow page wise report(s) found...
                </p>
            </field>
        </record>


    </data>
</odoo>