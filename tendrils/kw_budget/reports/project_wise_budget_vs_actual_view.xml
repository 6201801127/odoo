<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kproject_wise_budget_report_view_tree" model="ir.ui.view">
            <field name="name">Project Budget Month Wise Report</field>
            <field name="model">project_wise_budget_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <!-- <field name="sbu_id" invisible='1'/> -->
                    <field name="sequence_ref"/>
                    <field name="budget_type"/>
                    <field name="expense_type"/>
                    <field name="project_line"/>
                    <field name="work_order_type"/>
                    <!-- <field name="sbu_name"/> -->
                    <field name="department_id"/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                    <field name="project_id" invisible='1'/>
                    <field name="project_name"/>
                    <field name="project_code"/>
                    <field name="opp_name"/>
                    <field name="order_value"/>
                    <field name="category_id"/>
                    <field name="client_name"/>
                    <field name="account_id" invisible='1'/>
                    <field name="fiscal_year_id"/>
                    <field name="total_budget" sum="Total"/>  
                    <field name="actual_amount" sum="Total" class="actual_amt_class"/>
                    <field name="april_budget" sum="Total"/>  
                    <field name="april_actual" sum="Total" class="actual_budget_class"/>
                    <field name="may_budget" sum="Total"/>
                    <field name="may_actual" sum="Total" class="actual_budget_class"/>
                    <field name="june_budget" sum="Total"/>
                    <field name="june_actual" sum="Total" class="actual_budget_class"/>
                    <field name="july_budget" sum="Total"/>
                    <field name="july_actual" sum="Total" class="actual_budget_class"/>
                    <field name="august_budget" sum="Total"/>
                    <field name="august_actual" sum="Total" class="actual_budget_class"/>
                    <field name="september_budget" sum="Total"/>
                    <field name="september_actual" sum="Total" class="actual_budget_class"/>
                    <field name="october_budget" sum="Total"/>
                    <field name="october_actual" sum="Total" class="actual_budget_class"/>
                    <field name="november_budget" sum="Total"/>
                    <field name="november_actual" sum="Total" class="actual_budget_class"/>
                    <field name="december_budget" sum="Total"/>
                    <field name="december_actual" sum="Total" class="actual_budget_class"/>
                    <field name="january_budget" sum="Total"/>
                    <field name="january_actual" sum="Total" class="actual_budget_class"/>
                    <field name="february_budget" sum="Total"/>
                    <field name="february_actual" sum="Total" class="actual_budget_class"/>
                    <field name="march_budget" sum="Total"/>
                    <field name="march_actual" sum="Total" class="actual_budget_class"/>
                    <!-- <field name="sequence_ref"/> -->
                    <field name="group_type_id" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                    <field name="group_head_id" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                    <field name="group_id" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                    <field name="account_head_id" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                    <field name="account_sub_head_id" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                    <!-- <field name="account_name" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/> -->
                    <field name="account_name"/>
                   <field name="account_code" groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                    <button type="object" name="action_open_budget_entries" string="Entries..."
                    icon="fa-arrow-circle-o-right"  groups="kw_budget.group_finance_kw_budget,kw_budget.group_approver_kw_budget,kw_budget.group_manager_kw_budget"/>
                </tree>
            </field>
        </record>

        <record id="search_project_wise_budget_report_report" model="ir.ui.view">
            <field name="name">Search Report</field>
            <field name="model">project_wise_budget_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="fiscal_year_id"/>
                    <field name="project_id"/>
                    <!-- <field name="category_id"/> -->
                    <field name="expense_type"/>
                    <field name="department_id"/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                   <!-- <filter name="next_fy_filter" string="Next Financial Year" domain="[('fiscal_year_id.date_start', '&gt;', context_today().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/> -->
                   <filter name="current_fy_filter" string="Current Financial Year" 
                        domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                        context="{}" readonly="1"/>
                    <filter name="prev_fiscalyr_filter" string="Previous Financial Year" 
                            domain="[('fiscal_year_id.date_stop', '&gt;=', (datetime.datetime.now() - relativedelta(years=1)).strftime('%Y-%m-%d')),
                                    ('fiscal_year_id.date_stop', '&lt;', datetime.datetime.now().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/>
                    <group expand="0" string="Group By">
                        <filter name="group_account_fiscal_year" string="Financial Year" domain="[]" context="{'group_by':'fiscal_year_id'}" />
                        <filter name="group_account_code" string="Account Code" context="{'group_by':'account_id'}" />
                        <!-- <filter name="group_by_budget_type" string="Budget Type" domain="[]" context="{'group_by':'budget_type'}" />
                        <filter name="group_by_expense" string="Expense Type" domain="[]" context="{'group_by':'expense_type'}" /> -->
                        <!-- <filter name="group_by_sbu" string="SBU" domain="[]" context="{'group_by':'sbu_id'}" /> -->
                         
                    </group>
                </search>
            </field>
        </record>

        <record id="project_wise_budget_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Report/1.Project Budget/2.Budget Vs Actual</field>
            <field name="res_model">project_wise_budget_report</field>
            <field name="view_mode">tree,search</field>
            <field name="domain">['|',('group_id.code','in',['6']),('account_id.code','in',['3-2-1-1-1-001','3-2-1-1-1-002','3-2-1-1-1-003','3-2-2-1-2-001','3-2-3-1-1-001'])]</field>
            <field name="context">{'search_default_current_fy_filter': 1,'report_action_project_budget':True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Approved Budget report page report(s) found...
                </p>
            </field>
        </record>
    </data>
   
</odoo>