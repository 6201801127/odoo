<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_treasury_approved_budget_report_view_tree" model="ir.ui.view">
            <field name="name">Revenue Month Wise Report</field>
            <field name="model">kw_treasury_approved_budget_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <field name="sequence_ref"/>
                    <field name="account_code_id" invisible='1'/>
                    <field name="expense_type"/>
                    <field name="name_of_expenses"/>
                    <field name="remark"/>
                    <field name="department_id"/>
                    <field name="budget_department" invisible='1'/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                    <field name="fiscal_year_id"/>
                    <field name="total_budget" sum="Total" class="revenue_month_class_total"/> 
                    <field name="april_budget" sum="Total" class="revenue_month_class"/>
                    <field name="may_budget" sum="Total" class="revenue_month_class"/>
                    <field name="june_budget" sum="Total" class="revenue_month_class"/>
                    <field name="july_budget" sum="Total" class="revenue_month_class"/>
                    <field name="august_budget" sum="Total" class="revenue_month_class"/>
                    <field name="september_budget" sum="Total" class="revenue_month_class"/>
                    <field name="october_budget" sum="Total" class="revenue_month_class"/>
                    <field name="november_budget" sum="Total" class="revenue_month_class"/>
                    <field name="december_budget" sum="Total" class="revenue_month_class"/>
                    <field name="january_budget" sum="Total" class="revenue_month_class"/>
                    <field name="february_budget" sum="Total" class="revenue_month_class"/>
                    <field name="march_budget" sum="Total" class="revenue_month_class"/>
                    <field name="group_type_id" />
                    <field name="group_head_id" />
                    <field name="group_id" />
                    <field name="account_head_id"/>
                    <field name="account_sub_head_id"/>
                    <field name="account_name"/>
                    <field name="account_code"/>  
                </tree>
            </field>
        </record>

        <record id="search_kw_treasury_approved_budget_report" model="ir.ui.view">
            <field name="name">Search Report</field>
            <field name="model">kw_treasury_approved_budget_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_code_id"/>
                    <field name="fiscal_year_id"/>
                    <field name="department_id"/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                    <!-- <field name="state"/> -->
                    <field name="expense_type"/>
                   <!-- <filter name="next_fy_filter" string="Next Financial Year" domain="[('fiscal_year_id.date_start', '&gt;', context_today().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/> -->
                   <filter name="current_fy_filter" string="Current Financial Year" 
                        domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                        context="{}" readonly="1"/>
                    <filter name="prev_fiscalyr_filter" string="Previous Financial Year" 
                            domain="[('fiscal_year_id.date_stop', '&gt;=', (datetime.datetime.now() - relativedelta(years=1)).strftime('%Y-%m-%d')),
                                    ('fiscal_year_id.date_stop', '&lt;', datetime.datetime.now().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_account_fiscal_year" string="Financial Year" domain="[]" context="{'group_by':'fiscal_year_id'}" />
                        <!-- <filter name="group_by_state" string="Pending At" domain="[]" context="{'group_by':'state'}" /> -->
                        <filter name="group_by_expense" string="Expense Type" domain="[]" context="{'group_by':'expense_type'}" />
                        <filter name="group_ by_account_code" string="Account Code "  context="{'group_by':'account_code_id'}" />
                        <filter name="group_by_department" string="Department" domain="[]" context="{'group_by':'department_id'}" />
                        <filter name="group_by_division" string="Division" domain="[]" context="{'group_by':'division_id'}" />
                        <filter name="group_by_section" string="Section" domain="[]" context="{'group_by':'section_id'}" />
                        
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_treasury_approved_budget_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Report/2.Treasury Budget/1.Approved Budget</field>
            <field name="res_model">kw_treasury_approved_budget_report</field>
            <field name="view_mode">tree,search</field>
             <!-- <field name="context">{'search_default_fiscalyr_filter': 1,'report_action_revenue_budget':True}</field> -->
            <field name="context">{'search_default_current_fy_filter': 1,'report_action_treasury_approved_budget':True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Revenue report page wise report(s) found...
                </p>
            </field>
        </record>
    </data>
    
</odoo>