<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="project_budget_expense_report_view_tree" model="ir.ui.view">
            <field name="name">Project Month Wise Report</field>
            <field name="model">project_budget_expense_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false' decoration-danger="exceed_budget_amount == True" >
                    <field name="account_id" invisible="1"/>
                    <field name="budget_type"/>
                    <field name="group_type_id" string = 'Income/ Exp.'/>
                    <!-- <field name="particular"/> -->
                    <field name="work_order_type"/>
                    <field name="sbu_name"/>
                    <field name="project_name"/>
                    <field name="project_code"/>
                    <field name="opp_name"/>
                    <field name="client_name"/>
                    <field name="order_value"/>
                    <field name="fiscal_year_id"/>
               <!-- <field name="sbu_id"/> -->       
                    <field name="project_id" invisible='1'/>    
                    <!-- <field name="project_id"/>
                    <field name="order_code"/> -->   
                    <!-- <field name="category_id"/> -->
                    <field name="total_budget" sum="Total"/>  
                    <field name="actual_amount" sum="Total" class="actual_amt_class"/>
                    <field name="april_budget" sum="Total"/>
                     <field name="exceed_budget_amount" invisible='1'/>
                    <field name="april_actual" sum="Total" class="actual_budget_class"/>
                    <field name="may_budget" sum="Total"/>
                    <field name="may_actual" sum="Total" class="actual_budget_class"/>
                    <field name="june_budget" sum="Total"/>
                    <field name="june_actual" sum="Total" class="actual_budget_class"/>
                    <field name="july_budget" sum="Total"/>
                    <field name="july_actual" sum="Total" class="actual_budget_class"/>
                    <field name="august_budget" sum="Total"/>
                    <field name="august_actual" sum="Total" class="actual_budget_class"/>
                    <field name="september_budget" sum="Total"/>
                    <field name="september_actual" sum="Total" class="actual_budget_class"/>
                    <field name="october_budget" sum="Total"/>
                    <field name="october_actual" sum="Total" class="actual_budget_class"/>
                    <field name="november_budget" sum="Total"/>
                    <field name="november_actual" sum="Total" class="actual_budget_class"/>
                    <field name="december_budget" sum="Total"/>
                    <field name="december_actual" sum="Total" class="actual_budget_class"/>
                    <field name="january_budget" sum="Total"/>
                    <field name="january_actual" sum="Total" class="actual_budget_class"/>
                    <field name="february_budget" sum="Total"/>
                    <field name="february_actual" sum="Total" class="actual_budget_class"/>
                    <field name="march_budget" sum="Total"/>
                    <field name="march_actual" sum="Total" class="actual_budget_class"/>
                    <field name="sequence_ref"/>
                    <field name="group_type_id"/>
                    <field name="group_head_id"/>
                    <field name="group_id"/>
                    <field name="account_head_id"/>
                    <field name="account_sub_head_id"/>
                    <field name="account_name"/>
                    <field name="account_code"/>
                    <button type="object" name="action_open_budget_entries" string="Entries..."
                            icon="fa-arrow-circle-o-right"/>
                </tree>
            </field>
        </record>

        <record id="search_project_budget_expense_report_report" model="ir.ui.view">
            <field name="name">Search Report</field>
            <field name="model">project_budget_expense_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_id"/>
                    <field name="group_type_id"/>
                    <field name="group_head_id"/>
                    <field name="group_id"/>
                    <field name="project_id"/>
                    <field name="account_head_id"/>
                    <field name="account_sub_head_id"/>
                    <field name="fiscal_year_id"/>
                    <!-- <field name="sbu_id"/> -->
                    <filter name="current_fy_filter" string="Current Financial Year" domain="[('current_financial_year','=',True)]"/>
                    <separator/>
                    <filter name="prev_fiscalyr_filter" string="Previous Financial Year" 
                            domain="[('fiscal_year_id.date_stop', '&gt;=', (datetime.datetime.now() - relativedelta(years=1)).strftime('%Y-%m-%d')),
                                    ('fiscal_year_id.date_stop', '&lt;', datetime.datetime.now().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/>
                    <!-- <filter name="no_fiscal_year_filter" string="Extra Expenses" domain="[('fiscal_year_id','=',False)]"/> -->
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_account_fiscal_year" string="Financial Year" domain="[]" context="{'group_by':'fiscal_year_id'}" />
                        <filter name="group_account_code" string="Account Code" domain="[]" context="{'group_by':'account_id'}" />
                        <!-- <filter name="group_sbu" string="SBU" domain="[]" context="{'group_by':'sbu_id'}" /> -->
                        <filter name="group_by_project" string="Project" domain="[]" context="{'group_by':'project_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="project_budget_expense_report_view_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project Budget/Budget vs Actual</field>
            <field name="res_model">project_budget_expense_report</field>
            <field name="view_mode">tree,search</field>
            <field name="domain">['&amp;',["fiscal_year_id", "=", 5],'|',('group_id.code','in',['6']),('account_id.code','in',['3-2-1-1-1-001','3-2-1-1-1-002','3-2-1-1-1-003','3-2-2-1-2-001','3-2-3-1-1-001'])]</field>
            <!-- <field name="context">{'search_default_current_fy_filter': 1}</field> -->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No expense report page wise report(s) found...
                </p>
            </field>
        </record>
    </data>
    <template id="revenue_budget_expense_report_assets" inherit_id="web.assets_backend">
		<link rel="stylesheet" type="text/scss" href="/web/static/src/scss/webclient.scss" position="after">
            <link rel="stylesheet" type="text/css" href="/kw_budget/static/src/css/budget_tree.css"/>
        </link>
	</template>
</odoo>
