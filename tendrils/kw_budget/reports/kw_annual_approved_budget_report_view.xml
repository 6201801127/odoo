<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_annual_approved_budget_report_view_tree" model="ir.ui.view">
            <field name="name">Project Budget Month Wise Report</field>
            <field name="model">kw_annual_approved_budget_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <field name="sequence_ref"/>
                    <field name="budget_type"/>
                    <field name="department_id"/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                    <field name="expense_type"/>
                    <field name="particular"/>
                    <field name="work_order_type"/>
                    <!-- <field name="sbu_name"/> -->
                    <field name="project_id" invisible='1'/>
                    <field name="project_name"/>
                    <field name="project_code"/>
                    <field name="opportunity_name"/>
                    <field name="order_value"/>
                    <field name="category_id"/>
                    <field name="client"/>
                    <field name="fiscal_year_id"/>
                    <field name="total_budget" sum="Total" class="revenue_month_class_total"/> 
                    <field name="apr_budget" sum="Total" class="revenue_month_class"/>
                    <field name="may_budget" sum="Total" class="revenue_month_class"/>
                    <field name="jun_budget" sum="Total" class="revenue_month_class"/>
                    <field name="jul_budget" sum="Total" class="revenue_month_class"/>
                    <field name="aug_budget" sum="Total" class="revenue_month_class"/>
                    <field name="sep_budget" sum="Total" class="revenue_month_class"/>
                    <field name="oct_budget" sum="Total" class="revenue_month_class"/>
                    <field name="nov_budget" sum="Total" class="revenue_month_class"/>
                    <field name="dec_budget" sum="Total" class="revenue_month_class"/>
                    <field name="jan_budget" sum="Total" class="revenue_month_class"/>
                    <field name="feb_budget" sum="Total" class="revenue_month_class"/>
                    <field name="mar_budget" sum="Total" class="revenue_month_class"/> 
                    <field name="account_code_id" invisible='1'/>
                    <field name="group_type_id"/>
                    <!-- <field name="group_name_id"/> -->
                    <field name="group_head_id"/>
                    <field name="group_id"/>
                    <field name="account_head_id"/>
                    <field name="account_sub_head_id"/>
                    <field name="account_name"/>
                    <field name="account_code"/>
                </tree>
            </field>
        </record>

        <record id="search_kw_annual_approved_budget_report_report" model="ir.ui.view">
            <field name="name">Search Report</field>
            <field name="model">kw_annual_approved_budget_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_code_id"/>
                    <field name="fiscal_year_id"/>
                    <field name="project_id"/>
                    <field name="project_code"/>
                   <field name="department_id"/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                    <field name="category_id"/>
                    <field name="expense_type"/>
                    <field name="budget_type"/>
                    <filter name="prev_fiscalyr_filter" string="Previous Financial Year" 
                            domain="[('fiscal_year_id.date_stop', '&gt;=', (datetime.datetime.now() - relativedelta(years=1)).strftime('%Y-%m-%d')),
                                    ('fiscal_year_id.date_stop', '&lt;', datetime.datetime.now().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/>
                   <!-- <filter name="next_fy_filter" string="Next Financial Year" domain="[('fiscal_year_id.date_start', '&gt;', context_today().strftime('%Y-%m-%d'))]" context="{}" readonly="1"/> -->
                   <filter name="current_fy_filter" string="Current Financial Year" 
                        domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                        readonly="1"/>
                    <group expand="0" string="Group By">
                        <filter name="group_account_fiscal_year" string="Financial Year" domain="[]" context="{'group_by':'fiscal_year_id'}" />
                        <filter name="group_by_budget_type" string="Budget Type" domain="[]" context="{'group_by':'budget_type'}" />
                        <filter name="group_by_expense" string="Expense Type" domain="[]" context="{'group_by':'expense_type'}" />
                        <!-- <filter name="group_by_sbu" string="SBU" domain="[]" context="{'group_by':'sbu_id'}" /> -->
                         
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_annual_approved_budget_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">3.Revenue/1.Approved Budget</field>
            <field name="res_model">kw_annual_approved_budget_report</field>
            <field name="view_mode">tree,search</field>
            <field name="context">{'search_default_current_fy_filter': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Approved Budget report page report(s) found...
                </p>
            </field>
        </record>
    </data>
    <template id="revenue_budget_expense_report_assets" inherit_id="web.assets_backend">
		<link rel="stylesheet" type="text/scss" href="/web/static/src/scss/webclient.scss" position="after">
            <link rel="stylesheet" type="text/css" href="/kw_budget/static/src/css/budget_tree.css"/>
        </link>
	</template>
</odoo>