<odoo>
    <data>
        <record id="view_kw_sbu_project_category_master_tree" model="ir.ui.view">
            <field name="name">kw_sbu_project_category_master</field>
            <field name="model">kw_sbu_project_category_master</field>
            <field name="arch" type="xml">
                <tree string="Project Category Master">
                    <field name="name" />
                    <field name="code" />
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_kw_sbu_project_category_master_form">
            <field name="name">kw_sbu_project_category_master_view_form</field>
            <field name="model">kw_sbu_project_category_master</field>
            <field name="arch" type="xml">
                <form string="Project Category Master">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="view_kw_sbu_project_category_master_window_action">
            <field name="name">Project Category Master</field>
            <field name="res_model">kw_sbu_project_category_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new SBU mapping.
                </p>
            </field>
        </record>
    </data>
</odoo>