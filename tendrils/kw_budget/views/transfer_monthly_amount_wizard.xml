<odoo>
    <data>
        <record id="view_revise_amount_wizard_form" model="ir.ui.view">
            <field name="name">revise.amount.wizard.form</field>
            <field name="model">revise_amount_wizard</field>
            <field name="arch" type="xml">
                <form string="Revise Amount">
                    <group>
                        <field name="record_id" invisible="1"/>
                        <field name="source_month"/>
                        <field name="source_month_amt"/>
<!--                        <field name="destination_month"/>-->
<!--                        <field name="transfer_amount"/>-->
                        <field name="revise_amount_destination_wizard_ids" colspan="4" nolabel="1">
                                    <tree string="Destination Months Lines" editable="bottom" >
                                        <field name="destination_month"/>
                                        <field name="amount"/>
                                    </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Revise" type="object" name="revise_amount" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
