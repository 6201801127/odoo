<odoo>
    <data>
        
        <record id="view_approve_revision_wizard_form" model="ir.ui.view">
            <field name="name">approve.revision.wizard.form</field>
            <field name="model">approve_revision_wizard</field>
            <field name="arch" type="xml">
                <form string="Approve Revision">
                    <group>
                        <field name="record_id" invisible="1"/>
                        <field name="remarks" required="1"/>
                    </group>
                    <footer>
                        <button string="Approve" type="object" name="approve_revision" class="btn-primary"/>
                        <button string="Cancel" type="object" name="cancel_revision" class="btn-danger"/>
<!--                        <button string="Cancel" class="btn-secondary" special="cancel"/>-->
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_approve_revision_wizard" model="ir.actions.act_window">
            <field name="name">Approve Revision</field>
            <field name="res_model">approve_revision_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_approve_revision_wizard_form"/>
            <field name="target">new</field>
            <field name="groups_id" eval="[(6, 0, [ref('kw_budget.group_l2_kw_budget')])]"/>
        </record>

    </data>
</odoo>
