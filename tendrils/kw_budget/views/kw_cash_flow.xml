<odoo>
    <data>
        <!--        Cash Flow Tree View-->
        <record id="view_kw_cash_flow_tree" model="ir.ui.view">
            <field name="name">kw_cash_flow_tree</field>
            <field name="model">kw_cash_flow</field>
            <field name="arch" type="xml">
                <tree delete="false" class="customer_tree">
                    <field name="fiscal_year_id"/>
                    <field name="capital_flow_line_ids"/>
                    <field name="revenue_flow_line_ids"/>
                    <field name="project_flow_line_ids"/>
                </tree>
            </field>
        </record>

        <!--    Cash FLow Form View    -->

        <record model="ir.ui.view" id="kw_cash_flow_form">
            <field name="name">kw_cash_flow_form</field>
            <field name="model">kw_cash_flow</field>
            <field name="arch" type="xml">
                <form string="Cash Flow" delete="false">
                    <style>
                        .table-responsive .o_list_view thead tr:nth-child(1) th{
                        background-color: rgb(204, 255, 255);
                        color: #4c4c4c;
                        }

                    </style>
                    <sheet>
                        <label for="fiscal_year_id" string="Financial Year" style="font-size:30px;color:rgb(255, 102, 178);"/>
                        <h1>
                            <div>
                                <field name="fiscal_year_id" placeholder="Financial Year" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            </div>
                        </h1>
                        <label for="capital_flow_line_ids" string="Capital-B/S Items" style="font-size:20px;color:rgb(45, 43, 208);"/>
                        <field name="capital_flow_line_ids" string="Capital Cash Flow">
                            <tree editable="top">
                                <field name="name_of_expense" required="1"/>
                                <field name="name" required="1"/>
                                <field name="account_code_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                                <field name="apr_budget" sum="Total"/>
                                <field name="may_budget" sum="Total"/>
                                <field name="jun_budget" sum="Total"/>
                                <field name="jul_budget" sum="Total"/>
                                <field name="aug_budget" sum="Total"/>
                                <field name="sep_budget" sum="Total"/>
                                <field name="oct_budget" sum="Total"/>
                                <field name="nov_budget" sum="Total"/>
                                <field name="dec_budget" sum="Total"/>
                                <field name="jan_budget" sum="Total"/>
                                <field name="feb_budget" sum="Total"/>
                                <field name="mar_budget" sum="Total"/>
                                <field name="total" sum="Total"/>
                                <field name="capital_budget_item"/>

                            </tree>
                        </field>
                        <label for="revenue_flow_line_ids" string="Revenue-B/S Items" style="font-size:20px;color:rgb(45, 43, 208);"/>
                        <field name="revenue_flow_line_ids" string="Revenue Cash Flow">
                            <tree editable="top">
                                <field name="name_of_expense" required="1"/>
                                <field name="name" required="1"/>
                                <field name="account_code_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                                <field name="apr_budget" sum="Total"/>
                                <field name="may_budget" sum="Total"/>
                                <field name="jun_budget" sum="Total"/>
                                <field name="jul_budget" sum="Total"/>
                                <field name="aug_budget" sum="Total"/>
                                <field name="sep_budget" sum="Total"/>
                                <field name="oct_budget" sum="Total"/>
                                <field name="nov_budget" sum="Total"/>
                                <field name="dec_budget" sum="Total"/>
                                <field name="jan_budget" sum="Total"/>
                                <field name="feb_budget" sum="Total"/>
                                <field name="mar_budget" sum="Total"/>
                                <field name="total" sum="Total"/>
                                <field name="revenue_budget_item"/>
                            </tree>
                        </field>
                        <label for="project_flow_line_ids" string="Project-B/S Items" style="font-size:20px;color:rgb(45, 43, 208);"/>
                        <field name="project_flow_line_ids" string="Project Cash Flow">
                            <tree editable="top">
                                <field name="name_of_expense" required="1"/>
                                <field name="name" required="1"/>
                                <field name="account_code_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                                <field name="apr_budget" sum="Total"/>
                                <field name="may_budget" sum="Total"/>
                                <field name="jun_budget" sum="Total"/>
                                <field name="jul_budget" sum="Total"/>
                                <field name="aug_budget" sum="Total"/>
                                <field name="sep_budget" sum="Total"/>
                                <field name="oct_budget" sum="Total"/>
                                <field name="nov_budget" sum="Total"/>
                                <field name="dec_budget" sum="Total"/>
                                <field name="jan_budget" sum="Total"/>
                                <field name="feb_budget" sum="Total"/>
                                <field name="mar_budget" sum="Total"/>
                                <field name="total" sum="Total"/>
                                <field name="project_budget_item"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!--     Cash Flow Action   -->

        <record model="ir.actions.act_window" id="kw_cash_flow_action_window">
            <field name="name">Cash Flow/Cash Flow Entry</field>
            <field name="res_model">kw_cash_flow</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new Cash Flow.
                </p>
                <p>
                </p>
            </field>
        </record>

    </data>
</odoo>