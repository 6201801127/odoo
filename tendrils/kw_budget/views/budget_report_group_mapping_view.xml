<odoo>
    <data>
        <record id="view_budget_report_group_mapping_tree" model="ir.ui.view">
            <field name="name">budget_report_group_mapping</field>
            <field name="model">budget_report_group_mapping</field>
            <field name="arch" type="xml">
                <tree string="Department Mapping">
                    <field name="code" />
                    <field name="group_type_id" />
                    <field name="group_head_id" />
                    <field name="group_id" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_budget_report_group_mapping_form">
            <field name="name">budget_report_group_mapping</field>
            <field name="model">budget_report_group_mapping</field>
            <field name="arch" type="xml">
                <form string="Group Mapping">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="group_type_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="group_head_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="group_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="view_budget_report_group_mapping_window_action">
            <field name="name">Budget Group Mapping</field>
            <field name="res_model">budget_report_group_mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new SBU mapping.
                </p>
            </field>
        </record>
    </data>
</odoo>