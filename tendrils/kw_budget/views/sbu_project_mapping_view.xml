<odoo>
    <data>
        <record id="view_kw_sbu_project_mapping_tree" model="ir.ui.view">
            <field name="name">kw_sbu_project_mapping</field>
            <field name="model">kw_sbu_project_mapping</field>
            <field name="arch" type="xml">
                <tree string="Department Mapping">
                    <field name="sbu_id" />
                    <field name="fiscal_year_id" />
                    <field name="level_1_approver" widget="many2many_tags" />
                    <field name="level_2_approver" widget="many2many_tags" />
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_kw_sbu_project_mapping_form">
            <field name="name">kw_sbu_project_mapping_view_form</field>
            <field name="model">kw_sbu_project_mapping</field>
            <field name="arch" type="xml">
                <form string="SBU Mapping">
                    <sheet>
                        <group>
                            <group>
                                <field name="sbu_id" options="{'no_create':True, 'no_open':True, 'no_edit':True}" class="hover"/>
                                <field name="fiscal_year_id" options="{'no_create':True, 'no_open':True, 'no_edit':True}"/>
                                <field name="level_1_approver" widget="many2many_tags" options="{'no_create':True, 'no_open':True, 'no_edit':True}"/>
                                <field name="level_2_approver" widget="many2many_tags" options="{'no_create':True, 'no_open':True, 'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="view_kw_sbu_project_mapping_window_action">
            <field name="name">SBU Mapping</field>
            <field name="res_model">kw_sbu_project_mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new SBU mapping.
                </p>
            </field>
        </record>
    </data>
</odoo>