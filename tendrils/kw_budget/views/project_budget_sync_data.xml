<odoo>
    <data>
        <record model="ir.ui.view" id="get_project_budget_data_wizard_form">
            <field name="name">Sync Project Budget Data</field>
            <field name="model">get_project_budget_data</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <b>
                            <center>
                                <span class="text-primary"><b>Enter the range of the records to sync Project Budget data.</b></span>
                            </center>
                        </b>
                        <group>
                            <field name="page_no"/>
                            <field name="length_of_page" />
                        </group>
                        <footer>
                            <center>
                                <button name="create_project_budget_details" type="object" string="Sync Project Budget"
                                    class="btn-primary" />
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="get_project_budget_data_wizard_action" model="ir.actions.act_window">
            <field name="name">Get Project Budget</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">get_project_budget_data</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <record id="view_project_budget_data_sync_tree" model="ir.ui.view">
            <field name="name">Kw Project Budget Data Sync</field>
            <field name="model">kw_project_budget_master_data</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' import='0' delete='0'>
                    <field name="kw_wo_id" invisible='1'/>
                    <field name="crm_lead_id"/>
                    <field name="wo_code"/>
                    <field name="project_id"/>
                    <field name="sbu_id"/>
                </tree>
            </field>
        </record>
        <record id="search_project_budget_data" model="ir.ui.view">
            <field name="name">Search Project Budget Data</field>
            <field name="model">kw_project_budget_master_data</field>
            <field name="arch" type="xml">
                <search>
                    <field name="wo_code"/>
                    <field name="crm_lead_id"/>
                </search>
            </field>
        </record>


        <record id="kw_project_budget_master_data_view_form" model="ir.ui.view">
            <field name="name">kw_project_budget_master_data.view.form</field>
            <field name="model">kw_project_budget_master_data</field>
            <field name="arch" type="xml">
                <form string="" create='0' edit='0' import='0' delete='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="kw_wo_id" readonly="1" invisible='0'/>
                                <field name="wo_name" readonly="1"/>
                                <field name="wo_code" readonly="1"/>
                                <field name="crm_lead_id"  readonly="1" invisible='0' options="{'no_open': True,'no_create':True,'no_edit':True}" />
                            </group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="sbu_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="project_name"/>
                                <field name="order_value" style="color:red;"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Budget Lines">
                                <field name="project_budget_ids" colspan="4" nolabel="1">
                                    <tree string="Budget Lines" >
                                        <field name="user_type_id" string="Group Type"/>
                                        <field name="group_head_id"/>
                                        <field name="group_name"/>
                                        <field name="account_head_id"/>
                                        <field name="account_sub_head_id"/>
                                        <field name="budget_amount"  sum='Total'/>
                                        <field name="old_fy_balance" sum='Total' />
                                        <field name="actual_amount" sum='Total'/>
                                        <field name="balance" sum='Total'/>
                                        <button name="get_voucher_details" string="View" type="object" icon="fa-paper-plane text-success"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="view_project_budget_data_sync_window_action">
            <field name="name">Kw Project Budget Data Sync</field>
            <field name="res_model">kw_project_budget_master_data</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Data Available.
                </p>
            </field>
        </record>
    </data>
</odoo>