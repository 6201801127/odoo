<odoo>
    <data>
        <record id="kw_budget_group_mapping_tree" model="ir.ui.view">
            <field name="name">kw_budget_group_mapping_tree</field>
            <field name="model">kw_budget_group_mapping</field>
            <field name="arch" type="xml">
                <tree string="Group Mapping">
                    <field name="group_name"/>
                    <field name="user_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_budget_group_mapping_form">
            <field name="name">kw_budget_group_mapping_form</field>
            <field name="model">kw_budget_group_mapping</field>
            <field name="arch" type="xml">
                <form string="Group Mapping">
                    <header>
                        <button string="Update" name="update_group" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="group_name" required='1'/>
                                <field name="user_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required='1'/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="kw_budget_group_mapping_window_action">
            <field name="name">Group Mapping</field>
            <field name="res_model">kw_budget_group_mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new Group mapping.
                </p>
                <p>
                </p>
            </field>
        </record>
    </data>
</odoo>