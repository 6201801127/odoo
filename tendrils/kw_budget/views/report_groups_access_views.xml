<odoo>
    <data>
        <record id="view_kw_report_access_groups_tree" model="ir.ui.view">
            <field name="name">kw_report_access_groups</field>
            <field name="model">kw_report_access_groups</field>
            <field name="arch" type="xml">
                <tree string="Department Mapping">
                    <field name="name" />

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_kw_report_access_groups_form">
            <field name="name">kw_report_access_groups_view_form</field>
            <field name="model">kw_report_access_groups</field>
            <field name="arch" type="xml">
                <form string="SBU Mapping">
                    <header>

                        <button name="update_user_access" type="object" string="Update"
                                class="btn-success"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" options="{'no_create':True, 'no_open':True, 'no_edit':True}" class="hover"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Report Access">
                                <group string="Group Access ">
                            <field name="group_users_ids" colspan="4" nolabel="1" readonly='0'>
                                <tree string="Group Access" editable="bottom">
                                    <field name="group_name"/>
                                    <field name="users_ids" options="{'no_create':True, 'no_open':True, 'no_edit':True}" widget="many2many_tags"/>
                                    <field name="report_access_group_id" invisible="1"/>

                                </tree>
                            </field>

                                    <field name="manager_report_access"/>
                                    <field name="users_ids" widget="many2many_tags" attrs="{'invisible': [('manager_report_access','=',False)], 'required':[('manager_report_access','=',True)]}"/>
                        </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="view_kw_report_access_groups_window_action">
            <field name="name">Group Access</field>
            <field name="res_model">kw_report_access_groups</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new Gropup Mapping.
                </p>
            </field>
        </record>
    </data>
</odoo>