<odoo>
    <data>
        <record id="view_kw_budget_access_permission_tree" model="ir.ui.view">
            <field name="name">kw_budget_access_permission</field>
            <field name="model">kw_budget_access_permission</field>
            <field name="arch" type="xml">
                <tree string="Access Permission" editable="top" delete="false" duplicate="false" import="false">
                    <field name="name" />
                    <field name="employee_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_kw_budget_access_permission_window_action">
            <field name="name">Budget Access Permission</field>
            <field name="res_model">kw_budget_access_permission</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new Budget mapping.
                </p>
            </field>
        </record>


    </data>
</odoo>