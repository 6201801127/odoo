<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="budget_xlsx_output_form" model="ir.ui.view">
        <field name="name">budget.xlsx.output.form</field>
        <field name="model">budget.xlsx.output</field>
        <field name="arch" type="xml">
            <form string="Download Report">
                <group>
                    <field name="xls_output"  filename="name"/>
                    <field name="name" invisible="1"/>
                </group>
                <footer>
                    <button special="cancel" string="Close" type="object" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_xlsx_output_budget_report" model="ir.actions.act_window">
        <field name="name">Report Download</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">budget.xlsx.output</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>