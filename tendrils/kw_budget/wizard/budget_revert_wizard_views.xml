    <record id="kw_budget_department_mapping_start" model="ir.ui.view">
        <field name="name">kw_budget_department_mapping_start_wizard</field>
        <field name="model">budget.department.mapping</field>
        <field name="arch" type="xml">
            <form string="Budget Start">

                <sheet>

                    <p style="font-size:20px;color:rgb(45, 43, 208);" class="center">Please check or Select the departments</p>
                    <group>
                        <field name="department_ids" widget="many2many_tags" colspan="4" options='{"no_open": False, "no_create": True}'/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="action_confirm"
                            type="object" default_focus="1" class="btn-success"/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

