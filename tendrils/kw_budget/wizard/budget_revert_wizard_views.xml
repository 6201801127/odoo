<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_budget_revert_wizard_form_view" model="ir.ui.view">
        <field name="name">kw_budget_revert_wizard</field>
        <field name="model">budget.revert</field>
        <field name="arch" type="xml">
            <form string="Renew">

                <sheet>
                    <group>
                        <field name="revert_to" required='1'/>
                        <!--                        <field name="capital_budget_id" invisible="0"/>-->
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="action_confirm"
                            type="object" default_focus="1" class="btn-success"/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

