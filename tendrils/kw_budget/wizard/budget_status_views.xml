<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_budget_status_wizard_form_view" model="ir.ui.view">
        <field name="name">Budget Status</field>
        <field name="model">budget.status</field>
        <field name="arch" type="xml">
            <form string="Budget Status">

                <sheet>
                    <group>


                        <field name="budget_type" required='1'/>
                    </group>
                    <group>
                        <h1 style="color:#17a2b8">Budget Status (Pending)</h1>
                        <field name="project_budget_status_ids" colspan="4" nolabel="1"  force_save="1" readonly="1">
                            <tree editable="bottom">
                                        <field name="fiscal_year_id" />
                                        <field name="created_by"/>
                                        <field name="budget_department"/>
                                        <field name="pending_since"/>
                                        <field name="pending_at_ids" widget="many2many_tags"/>
                                        <field name="status"/>
                                        <field name="date" />
                                        <field name="budget_status_id" invisible="1"/>
<!--                                 <button string="View Status" name="action_view_budget" type="object"  class="btn-success"/>-->
                            </tree>
                        </field>
                    </group>
                    <group>
                        <h1 style="color:#17a2b8">Budget Additional/Revise Status (Pending)</h1>
                        <field name="budget_status_line_ids" colspan="4" nolabel="1" readonly="1" force_save="1">
                            <tree editable="bottom">
                                        <field name="budget_name"/>
                                        <field name="fiscal_year_id"/>
                                        <field name="created_by"/>
                                        <field name="budget_department"/>
                                        <field name="pending_since"/>
                                        <field name="status" string="Pending At"/>
                                        <field name="date"/>
                                        <field name="budget_status_line_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Excel Import" name="print_budget_status_report" type="object" icon="fa-arrow-circle-o-right"/>
<!--                    <button string="Confirm" name="action_confirm"-->
<!--                            type="object" default_focus="1" class="btn-success"/>-->
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_kw_budget_status_wizard" model="ir.actions.act_window">
        <field name="name">Budget Status</field>
        <field name="res_model">budget.status</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context"></field>
    </record>

    <menuitem name="Bduget Status"
                  id="budget_status_menu"
                  parent="revenue_conf_menu"
                  action="kw_budget.action_kw_budget_status_wizard"
                  />



</odoo>