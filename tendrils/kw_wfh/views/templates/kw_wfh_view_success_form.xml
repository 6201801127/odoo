<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">
		<template id="kw_wfh_button_redirect_view" name="wfh">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">
							<div class="container card">
								<div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content text-center">

												<t t-foreach="datas" t-as="data">
													<h3>
													<span>
													</span>
														<t t-if="data.state == 'grant'">WFH request has been approved successfully!</t>
														<!-- <t t-if="data.state == 'hold'">WFH request is on Hold!</t> -->
														<t t-if="data.state == 'reject'">WFH request has been rejected successfully!</t>
													</h3>
													<h3>Ref: <strong><span t-field="data.ref_no"/></strong></h3>
													<br/>
													<a class="btn btn-secondary"
													   style="background-color: #f7941d !important;"
													   t-att-href="'/web#id='+str(data.id)+'&amp;action=kw_wfh.kw_wfh_requset_takeaction_window&amp;model=kw_wfh&amp;view_type=form'">
														View Details
														&amp;nbsp;
														<i class="fa fa-arrow-circle-right "/>
													</a>
												</t>
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
			</t>
		</template>

		<template id="kw_wfh_button_redirect_assets" inherit_id="kw_wfh.kw_wfh_button_redirect_view">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css?v=12" rel="stylesheet"/>
				<script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js?v=12"/>
			</xpath>
		</template>

	</data>
</odoo>