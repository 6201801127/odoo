<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_wfh_active_wfh_tree">
            <field name="name">kw_wfh_active_wfh.tree</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <tree import='false' create='false' edit='false' delete='false' default_order='create_date desc'>
                    <field name="ref_no"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="req_department_id"/>
                    <field name="req_division_id"/>
                    <field name="req_section_id"/>
                    <field name="req_practise_id"/>
                    <field name="wfh_type" invisible="1"/>
                    <field name="reason_id"/>
                    <field name="request_from_date"/>
                    <field name="request_to_date"/>
                    <field name="action_taken_by"/>
                    <field name="state"/>
                    <field name="form_status" invisible='1'/>
                    <button name="%(kw_wfh.kw_wfh_ra_end_process_wizard_act_window)d" string="End WFH" type="action" attrs="{'invisible': [('wfh_type','=','others')]}"  context="{'current_rec_id':id}" help="message" class="btn-danger"/>
                    <field name="wfh_active_link" invisible='1'/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_wfh_active_wfh_form">
            <field name="name">kw_wfh_takeaction.form</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <form create='false' delete='false' edit='false'>
                    <header>
                         <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="old_reff_no" attrs="{'invisible': [('old_reff_no','=', False)]}"/>
                                <field name="req_department_id"/>
                                <field name="req_division_id"/>
                                <field name="req_section_id"/>
                                <field name="req_practise_id"/>
                            </group>
                            <group>
                                <feld name="employee_id" />
                                <field name="job_id"/>
                                <field name="reason_id" domain="[('type', '=', 'employee' )]" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1"/>
                                <field name="computer_info" readonly="1"/>
                                <field name="inter_connectivity" readonly="1" options="{'horizontal': true}" widget="radio"/>
                                <!-- <field name="vpn_access" readonly="1" options="{'horizontal': true}" widget="radio"/> -->
                                <field name="citrix_access" readonly="1" options="{'horizontal': true}" widget="radio"/>
                                <field name="remark" string="Employee Remark" readonly="1"/>
                                <field name="ra_remark" string="Remark" required="1"/>
                            </group>
                            <group>
                                <field name="show_btn_cancel" invisible="1"/>
                                <field name="hide_btn_cancel" invisible="1"/>
                                <field name="show_apply_btn" invisible="1"/>
                                <field name="show_apply_extension_btn" invisible="1"/>
                                <field name="show_grant_button" invisible="1"/>
                                <field name="hide_extension_grant_btn" invisible="1"/>
                                <field name="show_hr_grant_button" invisible="1"/>
                                <field name="hide_extension_record" invisible="1"/>
                                <field name="show_hr_extension_button" invisible="1"/>
                                <field name="hide_csm_wfh_extended_record" invisible="1"/>
                                <field name="hr_created_wfh_active_link" invisible='1'/>
                                 <field name="filter_hr_record" invisible="1"/>
                                <field name="parent_ref_id" invisible='1'/>
                                <field name="request_from_date" attrs="{'readonly': [('parent_ref_id','!=', False)]}"/>
                                <field name="request_to_date" attrs="{'readonly': [('parent_ref_id','!=', False)]}"/>
                                <field name="days_count" readonly="1"/>
                                <p>
                                    (maximun days: <field name="allowed_days" readonly='1'/>
                                    )
                                </p>
                            </group>
                            <group>
                                <field name="revised_to_date" attrs="{'invisible': [('revised_to_date','=', False)]}" readonly="1"/>
                                <field name="extension_remark" attrs="{'invisible': [('extension_remark','=', False)]}" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_wfh_active_wfh_window">
            <field name="name">End WFH</field>
            <field name="res_model">kw_wfh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">['&amp;',('state','in',['grant']),('wfh_type','!=','others')]</field>
            <field name="context">{'wfh_manager_check':1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_wfh_active_wfh_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_wfh_active_wfh_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
						No records to show...
                </p>
            </field>
        </record>

    </data>
</odoo>