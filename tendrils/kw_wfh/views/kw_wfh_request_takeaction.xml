<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_wfh_requset_takeaction_tree">
            <field name="name">kw_wfh_takeaction.tree</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <tree import='false' create='false' edit='false' delete='false' default_order='id desc' >
                    <field name="ref_no"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="req_department_id"/>
                    <field name="req_division_id"/>
                    <field name="req_section_id"/>
                    <field name="req_practise_id"/>
                    <field name="wfh_type" invisible="1"/>
                    <field name="reason_id"/>
                    <field name="request_from_date"/>
                    <field name="request_to_date"/>
                    <field name="action_to_be_taken_by" groups="kw_wfh.group_kw_wfh_manager"/>
                    <field name="action_taken_by"/>
                    <field name="state"/>
                    <field name="form_status" invisible='1'/>
                    <button name="request_take_action" string="Take Action" type="object" attrs="{'invisible': [('state','in',['grant','cancel','reject'])]}" help="message" class="oe_highlight"/>
                    <!-- <button name="assign_daily_task" string="Report Task" type="object" attrs="{'invisible': [('state','in',['applied','cancel','reject','hold'])]}" help="message" class="btn-success"/> -->
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_wfh_requset_takeaction_form">
            <field name="name">kw_wfh_takeaction.form</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <form create='false' delete='false'>
                    <script>
                        $(document).ready(function(){ state=  $("[aria-pressed=true]").text().trim();
                           console.log(state);
                            if ((state == 'Granted') || (state == 'Rejected')){
                                $('.o_form_button_edit').hide();
                            }
                        });
                    </script>
                    <header>
                         <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="old_reff_no" attrs="{'invisible': [('old_reff_no','=', False)]}"/>
                                <field name="emp_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('state','in', ['applied','cancel','reject','expired','grant'])]}"/>
                                <field name="job_id" attrs="{'readonly': [('state','in', ['applied','cancel','reject','expired','grant'])]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_department_id" attrs="{'readonly': [('state','in', ['applied','cancel','reject','expired','grant'])]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_division_id" attrs="{'readonly': [('state','in', ['applied','cancel','reject','expired','grant'])]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_section_id" attrs="{'readonly': [('state','in', ['applied','cancel','reject','expired','grant'])]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_practise_id" attrs="{'readonly': [('state','in', ['applied','cancel','reject','expired','grant'])]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="reason_id" domain="[('type', '=', 'employee' )]" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1" />
                                <field name="remark" string="Reason Description" readonly="1" />
                                <field name="computer_info" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="inter_connectivity" options="{'horizontal': true}" widget="radio" readonly="1"/>
                                <!-- <field name="vpn_access" options="{'horizontal': true}" widget="radio" readonly="1"/> -->
                                <field name="citrix_access" options="{'horizontal': true}" widget="radio" readonly="1"/>
                                <field name="request_from_date" readonly="1"/>
                                <field name="request_to_date" attrs="{'readonly': [('state','in', ['grant','cancel','reject','expired'])]}"/>
                                <field name="days_count"/>
                                <p>(Maximum days: <field name="allowed_days" readonly='1'/>)</p>
                                <field name="ra_remark" string="RA Remark" readonly="1" attrs="{'invisible': [('ra_remark','=', False)]}"/>
                                <field name="show_btn_cancel" invisible="1"/>
                                <field name="hide_btn_cancel" invisible="1"/>
                                <field name="show_apply_btn" invisible="1"/>
                                <field name="show_apply_extension_btn" invisible="1"/>
                                <field name="show_grant_button" invisible="1"/>
                                <field name="hide_extension_grant_btn" invisible="1"/>
                                <field name="show_hr_grant_button" invisible="1"/>
                                <field name="hide_extension_record" invisible="1"/>
                                <field name="show_hr_extension_button" invisible="1"/>
                                <field name="hide_csm_wfh_extended_record" invisible="1"/>
                                <field name="hr_created_wfh_active_link" invisible='1'/>
                                <field name="parent_ref_id" invisible='1'/>
                                <field name="emp_record_report" invisible="1"/>
                                <field name="filter_hr_record" invisible="1"/>
                                <field name="act_from_date" invisible="1"/>
                                <field name="act_to_date" invisible="1"/>
                                <field name="is_extended" invisible="1"/>
                            </group>
                            <group>
                                <field name="revised_to_date" attrs="{'invisible': [('revised_to_date','=', False)]}" readonly="1"/>
                                <field name="extension_remark" attrs="{'invisible': [('extension_remark','=', False)]}" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_wfh_requset_takeaction_window">
            <field name="name">Take Action</field>
            <field name="res_model">kw_wfh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','in',['applied'])]</field>
            <field name="context">{'ra_view_loaded':True,'wfh_manager_check':1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_wfh_requset_takeaction_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_wfh_requset_takeaction_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
						No records to show...
                </p>
            </field>
        </record>

    </data>
</odoo>