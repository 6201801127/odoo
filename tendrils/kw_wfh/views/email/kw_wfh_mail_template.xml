                                            <th style="text-align: left; color:#676767;height: 34px; border-bottom:3px solid #dedede;" width="150px">
                                                Employee Name
                                            </th>
                                            <th style="text-align: left; color:#676767;height: 34px; border-bottom:3px solid #dedede;" width="150px">
                                                Employee Code
                                            </th>
                                            <th style="text-align: left; color:#676767;height: 34px; border-bottom:3px solid #dedede;" width="150px">
                                                Designation
                                            </th>
                                        </tr>
                                            % for row in ctx['emp_name']:
                                                <tr>
                                                <td style="color:#676767;height: 34px;" width="150px">
                                                % if row.name:
                                                    ${row.name}
                                                % endif
                                                </td>
                                                <td style="color:#167b9e;height: 34px;" width="150px">
                                                    % if row.emp_code:
                                                        ${row.emp_code}
                                                    % endif
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    % if row.job_id.name:
                                                        ${row.job_id.name}
                                                    % endif
                                                </td>
                                                </tr>
                                            % endfor
                                    </table>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <table border="0" cellspacing="0" cellpadding="5" style="border-collapse: collapse;font-size: 16px;">
                                        <tbody style="vertical-align: top;>
                                        <tr>
