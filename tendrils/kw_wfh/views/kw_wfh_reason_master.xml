<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_wfh_reason_master_tree">
            <field name="name">kw_wfh_reason_master.tree</field>
            <field name="model">kw_wfh_reason_master</field>
            <field name="arch" type="xml">
                <tree import='false' editable='bottom'>
                    <field name="sequence" widget='handle' groups="kw_wfh.group_kw_wfh_manager"/>
                    <field name="reason" groups="kw_wfh.group_kw_wfh_manager"/>
                    <field name="type" widget="many2many_tags" groups="kw_wfh.group_kw_wfh_manager"/>
                    <field name="no_of_days" groups="kw_wfh.group_kw_wfh_manager"/>
                    <field name="back_date" widget="boolean_toggle" groups="kw_wfh.group_kw_wfh_manager"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_wfh_reason_master_form">
            <field name="name">kw_wfh_reason_master.form</field>
            <field name="model">kw_wfh_reason_master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="reason" groups="kw_wfh.group_kw_wfh_manager"/>
                                <field name="type" widget="many2many_tags" groups="kw_wfh.group_kw_wfh_manager"/>
                                <field name="no_of_days" groups="kw_wfh.group_kw_wfh_manager"/>
                                <field name="sequence" widget='handle' groups="kw_wfh.group_kw_wfh_manager"/>
                                <field name="back_date" widget="boolean_toggle" groups="kw_wfh.group_kw_wfh_manager"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_wfh_reason_master_action">
            <field name="name">Reason Master</field>
            <field name="res_model">kw_wfh_reason_master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_wfh_reason_master_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_wfh_reason_master_form')})]"/>
        </record>

    </data>
</odoo>