<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_kw_wfh_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.kw_wfh</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Work From Home" string="Work From Home" data-key="kw_wfh">
                <h2>Work From Home Configuration Parameters</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row">
                                    <label string="HRD Notification Email" for="cc_notification_email" class="col-lg-5"/>
                                    <field name="cc_notification_email"/>
                                </div>
                                <div class="text-muted">
                                    Add Group HRD email to send notification.
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="row">
                                    <label string="Individual HR Email" for="hr_email" class="col-lg-5"/>
                                    <field name="hr_email"/>
                                </div>
                                <div class="text-muted">
                                    Add individual email to send notification.
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="row">
                                    <label string="CC Notification" for="notification_cc_ids" class="col-lg-5"/>
                                    <field name="notification_cc_ids" widget="many2many_tags" options="{'no_edit': True,'no_create': True, 'no_open': True}"/>
                                </div>
                                <div class="text-muted">
                                    Add Group of email to send notification.
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="row">
                                    <label string="No of days" for="count_days" class="col-lg-5"/>
                                    <field name="count_days" force_save='1'/>
                                </div>
                                <div class="text-muted">
                                    Select No of days after which HRD receives WFH closing mail if the WFH period is greator than selected total days.
                                </div>
                            </div>
                        </div>
                    </div>
                       
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="kw_kw_wfh_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_wfh'}</field>
    </record>
</odoo>
