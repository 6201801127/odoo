<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Employee-Self Report  -->
        <record model="ir.ui.view" id="kw_wfh_emp_report_tree">
            <field name="name">kw_wfh_emp_report.tree</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <tree import='false' default_order='create_date desc' create='false' edit='false' delete='false'>
                    <field name="ref_no"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="req_department_id"/>
                    <field name="req_division_id"/>
                    <field name="req_section_id"/>
                    <field name="req_practise_id"/>
                    <field name="wfh_type" invisible="1"/>
                    <field name="reason_id"/>
                    <field name="action_taken_by"/>
                    <field name="request_from_date"/>
                    <field name="request_to_date"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_wfh_emp_report_form">
            <field name="name">kw_wfh_emp_report.form</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <form create='false' edit='false' delete='false'>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="emp_id" attrs="{'invisible': [('emp_id','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="job_id" attrs="{'invisible': [('job_id','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_department_id" attrs="{'invisible': [('req_department_id','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_division_id" attrs="{'invisible': [('req_division_id','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_section_id" attrs="{'invisible': [('req_section_id','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_practise_id" attrs="{'invisible': [('req_practise_id','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                            <group>
                                <field name="reason_id" domain="[('type', '=', 'employee' )]" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1" attrs="{'invisible': [('reason_id','=', False)]}"/>
                                <field name="days_count" required="1" readonly="1"/>
                                <p>
                                (Maximum days: <field name="allowed_days" readonly='1' attrs="{'invisible': [('allowed_days','=', False)]}"/>
                                )
                               </p>
                                <field name="computer_info" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="inter_connectivity" required="1" options="{'horizontal': true}" widget="radio"/>
                                <field name="citrix_access" required="1" options="{'horizontal': true}" widget="radio"/>
                                <field name="request_from_date" attrs="{'invisible': [('request_from_date','=', False)]}"/>
                                <field name="request_to_date" attrs="{'invisible': [('request_to_date','=', False)]}"/>
                                <field name="remark" string="Employee Remark" readonly="1" attrs="{'invisible': [('remark','=', False)]}"/>
                                <field name="ra_remark" string="Remark" attrs="{'invisible': [('ra_remark','=', False)]}"/>
                                <field name="show_btn_cancel" invisible="1"/>
                                <field name="hide_btn_cancel" invisible="1"/>
                                <field name="show_apply_btn" invisible="1"/>
                                <field name="show_apply_extension_btn" invisible="1"/>
                                <field name="show_grant_button" invisible="1"/>
                                <field name="hide_extension_grant_btn" invisible="1"/>
                                <field name="show_hr_grant_button" invisible="1"/>
                                <field name="hide_extension_record" invisible="1"/>
                                <field name="show_hr_extension_button" invisible="1"/>
                                <field name="hide_csm_wfh_extended_record" invisible="1"/>
                                <field name="hr_created_wfh_active_link" invisible='1'/>
                            </group>
                            <group>
                                <field name="revised_to_date" attrs="{'invisible': [('revised_to_date','=', False)]}"/>
                                <field name="extension_remark" attrs="{'invisible': [('extension_remark','=', False)]}"/>
                                <field name="emp_record_report" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="search_view_kw_wfh_employee_report" model="ir.ui.view">
            <field name="name">kw wfh Employee Report Search View</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <search string="Search WFH Record">
                    <field name="request_from_date"/>
                    <field name="state"/>
                    <field name="wfh_active_link"/>
                    <filter string="View by Date" name="filter_attendance_date" date="request_from_date"/>
                    <!-- <filter string="Active" name="filter_active_wfh_active_link" domain="[('wfh_active_link','=',True)]"/> -->
                    <!-- <filter string="Inactive" name="filter_inactive_wfh_active_link" domain="[('wfh_active_link','=',False)]"/> -->
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_request_from_date" string="View by Date" context="{'group_by':'request_from_date'}" />
                        <filter name="group_by_state" string="State" context="{'group_by':'state'}" />
                        <separator/>

                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_wfh_emp_report_action">
            <field name="name">My WFH</field>
            <field name="res_model">kw_wfh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('employee_id.user_id','=',uid),('create_uid','=',uid),('hide_hr_request_record','=',False)]</field>
            <field name="context">{'report_view_loaded':True}</field>
            <field name='search_view_id' ref='search_view_kw_wfh_employee_report'/>
            <field name="view_ids" eval="[(5, 0, 0),
