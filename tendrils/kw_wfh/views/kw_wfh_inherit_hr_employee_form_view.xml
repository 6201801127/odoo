<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="kw_wfh_hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">kw_wfh.hr_employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="" type="action" groups="hr.group_hr_manager" class="fa fa-circle fa-lg" aria-label="WFH Enabled" style="float:left;padding-left:10px;margin-left:7px;color:#9933ff" attrs="{'invisible': [('is_wfh','=', False)]}">
                        <span class="o_stat_text" style="color:darkslategrey;margin-left:5px;">WFH</span>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</openerp>