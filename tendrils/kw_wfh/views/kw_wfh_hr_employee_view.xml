<?xml version="1.0"?>
<odoo>
    <data>
        <record id="kw_wfh_hr_employee_recruitment_tree" model="ir.ui.view">
            <field name="name">kw_wfh.hr.employee.recruitment.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>