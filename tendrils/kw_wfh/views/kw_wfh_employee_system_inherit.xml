<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
    	<record id="kw_wfh_employee_system_tree_view" model="ir.ui.view">
			<field name="name">Employee System</field>
			<field name="model">hr.employee</field>
			<field name="arch" type="xml">
				<tree string="Employee System" editable="top" create="false">
					<field name="job_branch_id" string="Location" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                    <field name="department_id" string="Department" readonly="1"  options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                    <field name="division" string="Division" invisible="1"/>
                    <field name="image_small" string="Photo" class="oe_avatar" widget="image" invisible="1"/>
                    <field name="emp_code" string="Emp. Code" readonly="1"/>
                    <field name="name" string="Name" readonly="1"/>
                    <field name="job_id" string="Designation" readonly="1"  options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                    <field name="branch_unit_id" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                    <field name="workstation_id" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                    <field name="issued_system"/>
                    <field name="is_wfh" string="WFH" widget="boolean_toggle" groups="hr.group_hr_manager" />
                    <field name="system_location" attrs="{'readonly':[('issued_system','=','laptop')], 'required':[('issued_system','=','pc')]}" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="computer_info"/>
                    <field name="inter_connectivity"/>
                    <field name="citrix_access"/>
				</tree>
			</field>
		</record>
       <record id="kw_wfh_action_employee_system" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Emp vs WS</field>
			<field name="res_model">hr.employee</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
            <field name="domain">['|',('parent_id.user_id','=',uid),('department_id.manager_id.user_id','=',uid)]</field>
            <field name="view_id" ref="kw_wfh_employee_system_tree_view"/>
		</record>
        
    </data>
</odoo>