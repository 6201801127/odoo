<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Employee Request Extension -->
        <record model="ir.ui.view" id="kw_wfh_requset_extension_tree">
            <field name="name">kw_wfh.tree</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <tree import='false' create='false' edit='false' delete='false' default_order='create_date desc'>
                    <field name="ref_no"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="req_department_id"/>
                    <field name="req_division_id"/>
                    <field name="req_section_id"/>
                    <field name="req_practise_id"/>
                    <field name="reason_id"/>
                    <field name="request_from_date"/>
                    <field name="request_to_date"/>
                    <field name="action_taken_by"/>
                    <field name="state"/>
                    <button name="request_extension" string="Apply Extension" type="object" attrs="{'invisible': ['|',('state','in',['cancel','reject','applied']),('hide_extension_record','=',True)]}" help="message" class="oe_highlight"/>
                    <field name="hide_extension_record" invisible="1"/>
                    <field name="hide_csm_wfh_extended_record" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_wfh_requset_extension_form">
            <field name="name">kw_wfh.form</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <form create='false' delete='false'>
                    <script>
                        $(document).ready(function(){ state=  $("[aria-pressed=true]").text().trim();
                           console.log(state);
                            if (state != 'Draft'){
                                $('.o_form_button_edit').hide();
                            }
                        });
                    </script>
                    <sheet>
                        <group>
                            <group>
                                <feld name="employee_id" invisible="1"/>
                                <field name="emp_id" readonly="1"/>
                                <field name="job_id" readonly="1"/>
                                <field name="req_department_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_division_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_section_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="req_practise_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="request_from_date" readonly="1"/>
                                <field name="request_to_date" readonly="1"/>
                                <field name="days_count" required="1" readonly="1"/>
                                <field name="reason_id" domain="[('type', '=', 'employee' )]" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1"/>
                                <field name="computer_info" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="inter_connectivity" readonly="1" options="{'horizontal': true}" widget="radio"/>
                                <!-- <field name="vpn_access" readonly="1" options="{'horizontal': true}" widget="radio"/> -->
                                <field name="citrix_access" readonly="1" options="{'horizontal': true}" widget="radio"/>
                                <field name="remark" string="Reason Description" readonly="1"/>
                            </group>
                            <group>
                                <field name="revised_to_date" options='{"datepicker": {"daysOfWeekDisabled": [0, 6]}}' required="1" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                <field name="extension_remark" required="1"/>
                                <field name="show_btn_cancel" invisible="1"/>
                                <field name="hide_btn_cancel" invisible="1"/>
                                <field name="show_apply_btn" invisible="1"/>
                                <field name="show_grant_button" invisible="1"/>
                                <field name="show_hr_grant_button" invisible="1"/>
                                <field name="show_hr_extension_button" invisible="1"/>
                                <field name="hide_extension_grant_btn" invisible="1"/>
                                <field name="show_apply_extension_btn" invisible="1"/>
                                <field name="hide_csm_wfh_extended_record" invisible="1"/>
                                <field name="hide_extension_record" invisible="1"/>
                                <field name="hr_created_wfh_active_link" invisible='1'/>
                                <field name="parent_ref_id" invisible="1"/>
                                <field name="show_wfh_record" invisible='1'/>
                                <field name="emp_record_report" invisible="1"/>
                                <field name="filter_hr_record" invisible="1"/>
                                <field name="act_from_date" invisible="1"/>
                                <field name="act_to_date" invisible="1"/>
                                <field name="state" invisible='1' widget="statusbar"/>
                                <field name="is_extended" invisible='1'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_wfh_requset_extension_action">
            <field name="name">Apply Extension</field>
            <field name="res_model">kw_wfh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">['&amp;','&amp;','&amp;','&amp;',('hide_extension_record','=',False),('create_uid','=',uid),('state','in',['grant']),('hide_csm_wfh_extended_record','=',False),('show_wfh_record','=',False)]</field>
            <field name="context">{'is_extended':True,'extended_record':True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_wfh_requset_extension_tree')})]"/>
        </record>





        <!-- WFH link Extension BY CSM -->

        <record model="ir.ui.view" id="kw_wfh_initiative_extension_by_csm_tree">
            <field name="name">kw_wfh_link_extension.tree</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <tree import='false' default_order='create_date desc' create='false' edit='false' delete='false'>
                    <field name="ref_no"/>
                    <!-- <field name="old_reff_no"/> -->
                    <field name="search_by"/>
                    <field name="department_id" widget="many2many_tags"/>
                    <field name="division" widget="many2many_tags"/>
                    <field name="section" widget="many2many_tags"/>
                    <field name="practise" widget="many2many_tags"/>
                    <field name="location_type"/>
                    <field name="location_id" widget="many2many_tags"/>
                    <field name="searched_user" widget="many2many_tags"/>
                    <field name="reason_id"/>
                    <field name="request_from_date"/>
                    <field name="request_to_date"/>
                    <field name="revised_to_date"/>
                    <field name="state"/>
                    <button name="wfh_link_extension" string="Apply Extension" type="object" attrs="{'invisible': ['|',('state','in',['cancel','reject','applied']),('hide_extension_record','=',True)]}" help="message" class="oe_highlight"/>
                    <field name="hide_extension_record" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_wfh_initiative_extension_by_csm_form">
            <field name="name">kw_wfh_link_extension.form</field>
            <field name="model">kw_wfh</field>
            <field name="arch" type="xml">
                <form create='false' delete='false'>
                    <script>
                        $(document).ready(function(){ state=  $("[aria-pressed=true]").text().trim();
                           console.log(state);
                            if (state != 'Draft'){
                                $('.o_form_button_edit').hide();
                            }
                        });
                    </script>
                    <sheet>
                        <group>
                            <group>
                                <!-- <field name="old_reff_no"/> -->
                                <field name="search_by" widget="radio" options="{'horizontal': true}" readonly="1"/>
                                <field name="department_id" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'department')]" attrs= "{'invisible': ['|',('department_id','=',False),('search_by', 'in', ['user'])],'required': [('search_by', 'in', ['hierarchy'])]}" style="width:92%%" readonly="1"/>
                                <field name="division" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'division')]" attrs= "{'invisible': ['|',('division','=',False),('search_by', 'in', ['user'])]}" style="width:92%%" readonly="1"/>
                                <field name="section" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'section')]" attrs= "{'invisible': ['|',('section','=',False),('search_by', 'in', ['user'])]}" style="width:92%%" readonly="1"/>
                                <field name="practise" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'practice')]" attrs= "{'invisible': ['|',('practise','=',False),('search_by', 'in', ['user'])]}" style="width:92%%" readonly="1"/>
                                <field name="location_type" widget="radio" options="{'horizontal': true}" readonly="1"/>
                                <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('location_id', '=', False)]}" widget="many2many_tags" readonly="1"/>
                                <field name="searched_user" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'required': [('search_by', 'in', ['user'])],'invisible': [('searched_user', '=', False)]}" widget="many2many_tags" force_save='1' readonly="1"/>
                                <field name="reason_id" domain="[('type', '=', 'csm')]" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1"/>
                                <field name="request_from_date" required="1" readonly="1"/>
                                <field name="request_to_date" required="1" readonly="1"/>
                                <field name="days_count" required="1" readonly="1"/>
                                <field name="remark" readonly="1" attrs="{'invisible': [('remark','=', False)]}"/>
                                <field name="show_btn_cancel" invisible="1"/>
                                <field name="hide_btn_cancel" invisible="1"/>
                                <field name="show_apply_btn" invisible="1"/>
                                <field name="show_grant_button" invisible="1"/>
                                <field name="show_apply_extension_btn" invisible="1"/>
                                <field name="hide_extension_record" invisible="1"/>
                                <field name="hide_extension_grant_btn" invisible="1"/>
                                <field name="show_hr_grant_button" invisible="1"/>
                                <field name="show_hr_extension_button" invisible="1"/>
                                <field name="hide_csm_wfh_extended_record" invisible="1"/>
                                <field name="hr_created_wfh_active_link" invisible='1'/>
                                <field name="parent_ref_id" invisible="1"/>
                                <field name="show_wfh_record" invisible='1'/>
                                <field name="emp_record_report" invisible="1"/>
                                <field name="filter_hr_record" invisible="1"/>
                                <field name="act_from_date" invisible="1"/>
                                <field name="act_to_date" invisible="1"/>
                                <field name="state" widget="statusbar" invisible='1'/>
                                <field name="is_extended" invisible='1'/>
                            </group>
                            <group>
                                <field name="parent_ref_id" invisible="1"/>
                                <field name="revised_to_date" options='{"datepicker": {"daysOfWeekDisabled": [0, 6]}}' required="1" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                <field name="extension_remark" readonly="1" attrs="{'invisible': [('extension_remark','=', False)]}"/>
                                <field name="emp_status_ids" readonly='1' force_save="1" limit='40' style='height:200px; overflow-y:auto'>
                                    <tree editable="top" style="pointer-events:none;">
                                        <field name="empl_id" readonly='1' style="pointer-events:none;" force_save="1"/>
                                        <field name="from_date" readonly='1' style="pointer-events:none;" force_save="1"/>
                                        <field name="to_date" readonly='1' style="pointer-events:none;" force_save="1"/>
                                        <field name="status" readonly='1' style="pointer-events:none;" force_save="1" widget="boolean_toggle"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_wfh_initiative_extension_by_csm_action">
            <field name="name">Extend WFH link</field>
            <field name="res_model">kw_wfh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">['&amp;','&amp;','&amp;','&amp;','&amp;',('create_uid','=',uid),('hide_emp_request_record','=',False),('state','in',['grant']),('hide_expired_record','=',False),('hide_extension_record','=',False),('show_wfh_record','=',False)]</field>
            <field name="context">{'is_extended':True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_wfh_initiative_extension_by_csm_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
						No records to show...
                </p>
            </field>
        </record>

    </data>
</odoo>