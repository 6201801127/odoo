        <record model="ir.module.category" id="module_category_kw_wfh">
            <field name="name">Work From Home</field>
            <field name="description">User access level for this module</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_kw_wfh_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_kw_wfh"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_kw_wfh_report_user" model="res.groups">
            <field name="name">Report Access</field>
            <field name="category_id" ref="module_category_kw_wfh"/>
