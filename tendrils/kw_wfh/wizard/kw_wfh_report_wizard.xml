<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- WFH report -->
	<record id="wfh_report_wizard_view" model="ir.ui.view">
		<field name="name">WFH Report</field>
		<field name="model">kw_wfh_report_wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="applied_by" widget="radio" options="{'horizontal': true}"/>
						<field name="date_from"
						       attrs="{'invisible': [('applied_by', 'in', ['employee'])],'required':[('applied_by', '=', 'dt')]}"
						       widget="date"/>
						<field name="date_to"
						       attrs="{'invisible': [('applied_by', 'in', ['employee'])],'required':[('applied_by', '=', 'dt')]}"
						       widget="date"/>
						<field name="employee_ids"
						       attrs="{'invisible': [('applied_by', 'in', ['dt'])],'required':[('applied_by', '=', 'employee')]}"
						       options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
					</group>
				</group>
				<footer>
					<button name="search_wfh_report" string="View Reports" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="wfh_report_wizard_action" model="ir.actions.act_window">
		<field name="name">WFH - All</field>
		<field name="res_model">kw_wfh_report_wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="wfh_report_wizard_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records to take action...
			</p>
		</field>
	</record>

</odoo>

