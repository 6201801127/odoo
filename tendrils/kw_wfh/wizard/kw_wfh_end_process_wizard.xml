<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
          <record id="kw_wfh_end_process_wizard_form_view" model="ir.ui.view">
            <field name="model">kw_wfh_end_process_wizard</field>
            <field name="arch" type="xml">
                <form>
                 <script>
                    $(document).ready(function(){    
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="remark"/>
                        </p>
                        <button type="object" name="call_end_process" class="btn-success mr-2" style="float:left;">End</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
                </form>
            </field>
        </record>
        <record id="kw_wfh_end_process_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Work From Home End Process</field>
            <field name="res_model">kw_wfh_end_process_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="src_model">kw_wfh</field>
            <field name="view_id" ref="kw_wfh_end_process_wizard_form_view"/>
            <field name="target">new</field>
        </record>

        <record id="kw_wfh_ra_end_process_wizard_form_view" model="ir.ui.view">
            <field name="model">kw_wfh_ra_end_process_wizard</field>
            <field name="arch" type="xml">
                <form>
                 <script>
                    $(document).ready(function(){    
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="remark"/>
                        </p>
                        <button type="object" name="call_ra_end_process" class="btn-success mr-2" style="float:left;">End</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
                </form>
            </field>
        </record>
        <record id="kw_wfh_ra_end_process_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Work From Home RA End Process</field>
            <field name="res_model">kw_wfh_ra_end_process_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="src_model">kw_wfh</field>
            <field name="view_id" ref="kw_wfh_ra_end_process_wizard_form_view"/>
            <field name="target">new</field>
        </record>
          
    </data>
</odoo>