<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="o">
         <record id="kw_wfh_deliverable_wizard_view_form" model="ir.ui.view">
            <field name="model">kw_wfh_deliverables_wizard</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <div class="row">
                        <div class="col-sm-10 mx-auto">
                            <div class="row">
                                <div class="col-sm-3" style="color: #328385;"> <h3>Task Status: </h3> </div>
                                <div class="col-sm-9"> 
                                    <field name="deliverable_record_id" invisible="1"/>
                                    <field name="status" style="overflow-y: hidden;width: 400px;"/> 
                                </div>
                            </div>
                           
                            <div class="row">
                                <div class="col-sm-3" style="color: #328385;"> <h3> Reporting Date: </h3> </div>
                                <div class="col-sm-9">
                                    <field name="submission_date" style="overflow-y: hidden;height: 30px;resize: none;width: 400px;"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3" style="color: #328385;"> <h3> From Time: </h3> </div>
                                <div class="col-sm-9">
                                    <field name="start_time" style="overflow-y: hidden;height: 30px;resize: none;width: 400px;"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3" style="color: #328385;"> <h3> To Time: </h3> </div>
                                <div class="col-sm-9">
                                    <field name="end_time" style="overflow-y: hidden;height: 30px;resize: none;width: 400px;"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3" style="color: #328385;"> <h3>Comment: </h3> </div>
                                <div class="col-sm-9">
                                    <field name="comment" style="overflow-y: hidden;height: 30px;resize: none;width: 400px;"/>
                                </div>
                            </div>
                            <div class="text-center">
                                <footer>
                                 <button name="submit_task_response" type="object" class="btn btn-success btn-lg">Submit</button>
                                 <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                                 </footer>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        
    </data>
</odoo>