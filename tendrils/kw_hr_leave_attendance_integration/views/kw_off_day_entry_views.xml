<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_kw_daily_employee_off_day_entry_list">
      <field name="name">Off Day Entries</field>
      <field name="model">kw_daily_employee_attendance</field>
      <field name="priority" eval='70'/>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_id"/>
          <field name="shift_name"/>
          <field name="past_off_days_entries" invisible="1"/>
          <field name="attendance_recorded_date" string="Date"/>
          <field name="check_in_time" string="Office In"/>
          <field name="check_out_time" string="Office Out"/>
          <field name="status"/>
          <button name="action_off_day_entry_apply_window" type="object" string="Apply" class="btn btn-sm btn-primary" />

        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_kw_daily_employee_off_day_entry_window">
      <field name="name">Off Day Entries</field>
      <field name="res_model">kw_daily_employee_attendance</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('check_in','!=',False),('check_out','!=',False),('employee_id.user_id','=',uid),('day_status','in',['2','4','5']),('state','in',['1','7','8']),('comp_off_ids','=',False)]</field>
      <field name="context">{"filter_before_6_month_date":1,"create": False,"edit": False,"delete": False,"toolbar":False}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          No Off Day Entries
        </p>
      </field>
    </record>

    <record id="action_my_off_day_entries_view_tree" model="ir.actions.act_window.view">
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_kw_daily_employee_off_day_entry_list"/>
      <field name="act_window_id" ref="action_kw_daily_employee_off_day_entry_window"/>
    </record>



  </data>
</odoo>