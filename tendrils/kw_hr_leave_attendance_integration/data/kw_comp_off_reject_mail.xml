<?xml version="1.0"?>
<odoo>
    <data>
        <record id="kw_comp_off_reject_mail" model="mail.template">
            <field name="name">Comp Off Reject Mail.</field>
            <field name="model_id" ref="model_hr_leave_allocation"/>
            <field name="subject">Comp Off | Rejected | ${object.employee_id.display_name or ''}</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to" >${(object.employee_id.work_email if object.employee_id else ''|safe)}</field>
            <field name="email_cc">${(object.employee_id.parent_id.work_email if object.employee_id.parent_id.user_id != user else ''|safe)}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">

				<![CDATA[
					<table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                       ${object.employee_id.name or ''},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       Your Comp Off request has been rejected by ${(object.second_approver_id.display_name if object.second_approver_id else ''|safe)}.
                                    </p>
									
                                </div>

								<div style="margin-left: 1.2rem;margin-bottom:1em;">
									 <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Comp Off Details
                                    </p>
								</div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                           Department
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.employee_id.department_id.name}
                                        </td>
                                    </tr>
                                     <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Division
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.employee_id.division.name}
                                        </td>
                                    </tr>
                                    % if object.employee_id.section:
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                Section
                                            </td>
                                            <td style="color:#167b9e;height: 34px;">
                                                ${object.employee_id.section.name}
                                            </td>
                                        </tr>
                                    % endif
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Comp Off Date
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            %if object.attendance_date:
                                                ${format_tz(object.attendance_date, format='%d-%b-%Y')}
                                            % endif
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Applicable for
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${dict(object.fields_get(allfields=['comp_off_allocation'])['comp_off_allocation']['selection'])[object.comp_off_allocation]}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Project Name/Activity
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            % if object.project_name:
                                                ${object.project_name}    
                                            % endif
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Reason
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.notes}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Authority Remark
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.authority_remark}
                                        </td>
                                    </tr>
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to take action.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
			</field>
			<field name="user_signature" eval="False"/>
		</record>
	</data>
</odoo>
            
            
            