<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_tour_others_event_email_template" model="mail.template">
            <field name="name">Tour others submit Mail Template</field>   
            <field name="email_from">${user.email or object.create_uid.email}</field>
            <field name="subject">Group Tour Request | Applied by ${object.env.user.employee_ids.name}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="kw_tour.model_kw_tour_others"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        % if ctx['mail_for'] == 'reapply':
                                            ${(ctx.get('name') or ''|safe)},
                                        % elif ctx['mail_for'] == 'applied':
                                            ${(ctx.get('name') or ''|safe)},
                                        % endif
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                      <strong><b> ${object.env.user.employee_ids.name}</b></strong> has applied for group tour. Please check and take action. 
                                    </p>
                                </div>
                                % if ctx['mail_for'] == 'reapply':
                                    <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                        <tr>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Designation</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department Name</th>
                                            <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Work email</th>
                                            <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Status</th>

                                        </tr>
                                        %for rec in ctx['records']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['name']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['designation']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['department']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['work_email']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['status']}
                                            </td>
                                        </tr>
                                        % endfor
                                    </table>
                                % elif ctx['mail_for'] == 'applied':
                                    <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                        <tr>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Designation</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department Name</th>
                                            <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Work email</th>
                                            <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Status</th>

                                        </tr>
                                        %for rec in ctx['records']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['name']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['designation']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['department']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['work_email']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['status']}
                                            </td>
                                        </tr>
                                        % endfor
                                    </table>
                                % endif
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
        <record id="kw_tour_others_event_approve_email_template" model="mail.template">
            <field name="name">Tour others approve Mail Template</field>   
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="subject">Group Tour Request | Approved</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="kw_tour.model_kw_tour_others"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                       ${(ctx.get('name') or ''|safe)},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                      <strong><b> ${object.env.user.employee_ids.name}</b></strong> has approved the below group tour request.
                                    </p>
                                    <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                        <tr>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Designation</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department Name</th>
                                            <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Work email</th>
                                            <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Status</th>

                                        </tr>
                                        %for rec in ctx['records']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['name']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['designation']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['department']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['work_email']}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                ${rec['status']}
                                            </td>
                                        </tr>
                                        % endfor
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>