                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.employee_id.division.name}
                                            </td>
                                        </tr>
                                    %endif

                                    %if object.employee_id.section:
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                                Section
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.employee_id.section.name}
                                            </td>
                                        </tr>
                                    %endif

                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Type Of Tour
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.tour_type_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Purpose
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.purpose}
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Date Of Travel
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${format_tz(object.date_travel, format='%d-%b-%Y')}
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Originating Place
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.city_id.name}
                                        </td>
                                    </tr>
                                    
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Return Date
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${format_tz(object.date_return, format='%d-%b-%Y')}
                                        </td>
                                    </tr>

                                    %if object.can_apply_inr:
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                                Amount Disbursed(INR)
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.disbursed_inr}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                                New Advance Request(INR)
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.request_inr}
                                            </td>
                                        </tr>
                                    %endif

                                    %if object.can_apply_usd:
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                                Amount Disbursed(USD)
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.disbursed_usd}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                                New Advance Request(USD)
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.request_usd}
                                            </td>
                                        </tr>
                                    %endif

                                </table>
                                
                            </td>
                        </tr>
                    </table>
             ]]>
            </field>
