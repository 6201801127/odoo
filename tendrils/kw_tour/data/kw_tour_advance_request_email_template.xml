        <record id="kw_tour_apply_advance_request_email_template" model="mail.template">
            <field name="name">Tour Advance Request Mail Template</field>
            <field name="email_from">${user.email or object.create_uid.email}</field>
            <field name="subject">TOUR Advance Request of ${object.employee_id.name} (${object.employee_id.emp_code}) | Applied</field>
<!--            <field name="email_to">${(object.employee_id and object.employee_id.parent_id and object.employee_id.parent_id.work_email or ''|safe)}</field>-->
            <field name="email_to">${(ctx.get('emails') or ''|safe)}</field>
