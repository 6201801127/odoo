<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="csg_tour_apply_email_template" model="mail.template">
          <field name="name">Tour Applied Email Template</field>
          <field name="email_from">${user.email or object.create_uid.email}</field>
          <field name="subject">Group Tour Applied by ${object.create_uid.name}</field>
          <field name="email_to">${ctx['email_to']}</field>
          <field name="model_id" ref="kw_tour.model_kw_group_tour_csg"/>
          <field name="auto_delete" eval="False"/>
          <field name="body_html">
            <![CDATA[
            <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>
                        <div style="margin-left: 1.2rem;"> 
                            <h5 style="font-weight: 400; margin-bottom: 0; font-size: 18px; color: #676767;">
                                <small style="color: rgb(22, 123, 158); font-size: 18px; margin-right: 2px; font-weight: 600;">
                                    Dear ${ctx['emp_name']},
                                </small>
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                The group tour application was created by <b>${object.create_uid.name}</b>. Please log in to Tendrils Tour Module apply the tour.(Group Tour reference number - <b>${object.group_tour_csg_code})</b>.
                            </p>
                                <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                <br/><br/>
                                Thanks & regards
                                <br/>
                                CSM Technologies Pvt. Ltd.
                                <br/>
                            </p>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> This is a system generated mail. Please do not reply to this mail.</p>
                        </div>
                    </td>
                </tr>                
            </table> 
            ]]>   
               
            </field>

       </record>
    </data>
</odoo>
