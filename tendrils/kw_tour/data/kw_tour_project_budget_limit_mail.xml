<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_tour_project_budget_limit_email_template" model="mail.template">
            <field name="name">Tour Project Budget Limit Crossed Template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Tour Project Budget Limit Crossed</field>
            <field name="email_to">${(ctx.get('email_to') or ''|safe)}</field>
            <field name="model_id" ref="kw_tour.model_kw_tour_project_budget"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Dear ${(ctx.get('name') or ''|safe)}
                                        </span>
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Following project budget threshold limit has crossed.
                                    </p>
                                    <table style="border-collapse: collapse;font-size: 16px;font-family:Segoe UI; color: #454748; width: 100%;" border="1">
                                        <tr align="middle" style="background-color: #F1F1F1;" height="35px;">
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Budget Head</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Project</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Budget Amount</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Remaining Amount</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Threshold Limit (%)</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Budget Used (%)</th>
                                        </tr>
                                        % if ctx.get('budget_record'):
                                            % for budget in ctx.get('budget_record'):
                                            <tr align="middle">
                                                <td width="25%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${budget.budget_head_id.name}
                                                </td>
                                                <td width="25%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${budget.project_id.name}
                                                </td>
                                                <td width="25%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${budget.budget_amount}
                                                </td>
                                                <td width="25%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${budget.remaining_amount}
                                                </td>
                                                <td width="15%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;">
                                                    ${budget.threshold_limit}
                                                </td>
                                                <td width="15%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;">
                                                    ${round(budget.budget_perc, 2)}
                                                </td>
                                            </tr>
                                            % endfor
                                        % endif
                                    </table>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please log into the Tendrils to see details.
                                    </p>
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        <hr/>
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>

    </data>
</odoo>
