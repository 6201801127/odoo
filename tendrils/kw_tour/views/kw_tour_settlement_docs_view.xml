<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_settlement_docs_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_docs.tree</field>
            <field name="model">kw_tour_settlement_docs</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Tour Settlement Docs">
                    <field name="settlement_id"  invisible="1"/>
                    <field name="doc" />
                    <field name="file_name" />
                </tree>
            </field>
        </record>
        
        <record id="view_kw_tour_settlement_docs_form" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_docs.form</field>
            <field name="model">kw_tour_settlement_docs</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Tour Settlement Docs">
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <field name="doc" filename="file_name" widget="binary"/>
                    <field name="file_name" invisible="1"/>
                </form>
            </field>
        </record>
        
        <record id="action_kw_tour_settlement_docs_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Settlement Docs</field>
            <field name="res_model">kw_tour_settlement_docs</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Sorry no Tour Settlement found..
                </p>
            </field>
        </record>
        
    </data>
</odoo>