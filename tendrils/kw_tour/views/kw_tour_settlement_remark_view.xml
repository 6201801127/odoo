        <record id="view_kw_tour_settlement_approve_additional_expenses" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_approve_additional_expense.form</field>
            <field name="model">kw_tour_settlement</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    
                    <field name="ra_access" invisible="1"/>
                    <field name="own_record" invisible="1"/>
                    <field name="finance_access" invisible="1"/>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h3 font-weight-light text-left text-justify">
                                You are approving for Additional Expenses.
                                Are you sure ?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <button type="object" name="confirm_approve_with_additional_expenses" class="text-center btn btn-primary">Yes</button>
                        <button string="No" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>