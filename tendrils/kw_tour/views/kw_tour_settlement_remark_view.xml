                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                     <group>
                        <field name="own_record" invisible="1"/>
                        <field name="ra_access" invisible="1"/>
                        <field name="finance_access" invisible="1"/>
                        <field name="payment_date" required="1"/>
                        <field name="remark" required="1"/>

                    </group>
                    <div class="text-center mx-auto">
                        <button type="object" name="action_settlement_paid" 
                        class="text-center btn btn-primary">Submit</button>
                    </div>
