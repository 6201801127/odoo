<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <!-- Form view for tour settlement approve remark -->
        <record id="view_kw_tour_settlement_approve_remark_form" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_approve_remark.form</field>
            <field name="model">kw_tour_settlement</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="own_record" invisible="1"/>
                                <field name="ra_access" invisible="1"/>
                                <field name="finance_access" invisible="1"/>
                                <field name="remark" required="1"/>
                            </p>
                            <button type="object" name="action_settlement_approve" class="text-center btn btn-primary ">Submit</button>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <!-- Form view for tour settlement forward remark -->
        <record id="view_kw_tour_settlement_forward_remark_form" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_forward_remark.form</field>
            <field name="model">kw_tour_settlement</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <group>
                        <field name="create_uid" invisible="1"/>
                        <field name="current_user" invisible="1"/>
                        <field name="own_record" invisible="1"/>
                        <field name="ra_access" invisible="1"/>
                        <field name="finance_access" invisible="1"/>

                        <field name="approver_id" required="1" options="{'no_create': True,'no_open':True,'no_create_edit':True}" 
                        domain="[('user_id','not in',[create_uid,current_user])]"/>
                        <field name="remark" required="1"/>

                    </group>
                    <div class="text-center mx-auto">
                        <button type="object" name="action_settlement_forward" class="btn btn-primary ">Submit</button>
                    </div>
                   
                </form>
            </field>
        </record>

