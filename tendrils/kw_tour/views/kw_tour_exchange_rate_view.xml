<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_tour_exchange_rate_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_exchange_rate.tree</field>
            <field name="model">kw_tour_exchange_rate</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="date"/>
                    <field name="inr_currency" invisible="0"/>
                    <field name="rate" widget="monetary" options="{'currency_field': 'inr_currency'}"/>
                    <field name="kenya_currency" invisible="0"/>
                    <field name="kenya_rate" widget="monetary" options="{'currency_field': 'kenya_currency'}"/>
                    <field name="dubai_currency" invisible="0"/>
                    <field name="dubai_rate" widget="monetary" options="{'currency_field': 'dubai_currency'}"/>
                    <field name="canada_currency" invisible="0"/>
                    <field name="canada_rate" widget="monetary" options="{'currency_field': 'canada_currency'}"/>
                    <field name="rawanda_currency" invisible="0"/>
                    <field name="rawanda_rate" widget="monetary" options="{'currency_field': 'rawanda_currency'}"/>
                </tree>
            </field>
        </record>

        <record id="action_kw_tour_exchange_rate_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Exchange Rate</field>
            <field name="res_model">kw_tour_exchange_rate</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No exchange rate found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_exchange_rate_menu"
                  name="Exchange Rate"
                  action="action_kw_tour_exchange_rate_act_window"
                  parent="kw_tour_config_menu" groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance"/>

    </data>
</odoo>
