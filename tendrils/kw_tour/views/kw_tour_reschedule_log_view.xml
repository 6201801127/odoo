<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      
        <record id="view_kw_tour_reschedule_log_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_reschedule_log.tree</field>
            <field name="model">kw_tour_reschedule_log</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="tour_id" /> 
                    <field name="date_travel" />
                    <field name="date_return"/>
                    <field name="reschedule_count"/>
                </tree>
            </field>
        </record>
        
        <record id="view_kw_tour_reschedule_log_form" model="ir.ui.view">
            <field name="name">view.kw_tour_reschedule_log.form</field>
            <field name="model">kw_tour_reschedule_log</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false" duplicate="false">
                    <sheet>
                        <group>
                            <field name="tour_id" />
                            <field name="date_travel" />
                            <field name="date_return"/>
                            <field name="reschedule_count"/>
                        </group>
                        <group>
                            <field name="detail_ids">
                                <tree>
                                    <field name="from_date"/>
                                    <field name="from_time"/>
                                    <field name="from_city_id"/>
                                    <field name="to_date"/>
                                    <field name="to_time"/>
                                    <field name="to_city_id"/>
                                    <field name="from_date"/>
                                    <field name="travel_arrangement"/> 
                                    <field name="accomodation_arrangement"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_reschedule_log_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Reschedule Log</field>
            <field name="res_model">kw_tour_reschedule_log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to add new Human readable name
                </p>
                <p>
                    No log found ... 
                </p>
            </field>
        </record>
        
        <menuitem name="Tour Reschedule Log" id="menu_kw_tour_reschedule_log" parent="kw_tour_config_menu" groups="kw_tour.group_kw_tour_admin" action="action_kw_tour_reschedule_log_act_window"/>
    
    </data>
</odoo>