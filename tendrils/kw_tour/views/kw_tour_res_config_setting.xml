<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_tour_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tour</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Tour" string="Tour" data-key="kw_tour">
                    <h2>Tour</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="tour_maximum_pending_days"/>
                                <field name="tour_maximum_pending_days" required="1"/>
                            
                                <label for="tour_traveldesk_maximum_pending_days"/>
                                <field name="tour_traveldesk_maximum_pending_days" />

                                <label for="tour_public_access_job_ids"/>
                                <field name="tour_public_access_job_ids" widget="many2many_tags"/>
                                <label for="tour_others_approver"/>
                                <field name="tour_others_approver" options="{'no_create':True, 'no_edit':True, 'no_open':True}"/>
                              
                            </div>
                        </div>
                    </div>
                    <h2>Tour Traveldesk Exception</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="tour_traveldesk_approval_email_ids"/>
                                <field name="tour_traveldesk_approval_email_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <h2>Tour Finance Mail Notification</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Date" id="date">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="tour_finance_users_l1_ids"  class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tour_finance_users_l1_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="tour_finance_users_l2_ids"  class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tour_finance_users_l2_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Tour Traveldesk Mail Notification</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Date" id="date">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="tour_traveldesk_users_l1_ids"  class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tour_traveldesk_users_l1_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="tour_traveldesk_users_l2_ids"  class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tour_traveldesk_users_l2_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

    <record id="kw_tour_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_tour'}</field>
    </record>
</odoo>
