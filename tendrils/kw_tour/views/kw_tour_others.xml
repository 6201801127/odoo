                                            <field name="city_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}"/>
                                        </group>
                                        <group>
                                            <field name="to_city_class" options="{'no_create':True, 'no_edit':True, 'no_open':True}"/>
                                            <field name="to_city_currency_id" readonly="1" options="{'no_create':True, 'no_edit':True, 'no_open':True}"/>
