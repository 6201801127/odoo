                                <field name="tour_type_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}" domain="[('code', 'in', ['events', 'training', 'relocation', 'interviews'])]" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="purpose" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="date_travel" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="to_city_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="city_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}" attrs="{'readonly':[('state', '!=', 'Draft')]}" invisible="1"/>
                                <field name="date_return" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="budget_head_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="travel_arrangement" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="department_id" invisible="1"/>
                                <field name="total_budget_expense" invisible="1"/>
                                <field name="can_apply_inr" invisible="1"/>
                                <field name="can_apply_usd" invisible="1"/>
                                <field name="api_exchange_rate" invisible="1"/>
                            </group>
                        </group>
                        <group string="Add Employees">
                            <field name="assign_tour_others_emp_ids" attrs="{'readonly':[('state', '!=', 'Draft')]}">
                                <tree editable="bottom" nolabel="1">
                                    <field name="employee_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}"/>
                                    <field name="deg_id" readonly="1"/>
                                    <field name ="dept_id"/>
                                    <field name="work_email"/>
                                    <field name="city_id" options="{'no_create':True, 'no_edit':True, 'no_open':True}"/>
                                    <field name="to_city_class"/>
                                    <field name="to_city_currency_id"/>
                                    <field name="ticket_price" force_save="1" invisible="1"/>
                                    <field name="accomodation_arrangement" invisible="1"/>
                                    <field name="status" readonly="1"/>
                                    <field name="tour_type_boolean" invisible="1"/>
                                    <button name="approve" string="Approve" type="object" class="btn-success" attrs="{'invisible':['|', ('tour_type_boolean', '!=', True), ('status', 'not in', ['Pending'])]}"/>
                                    <button name="reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible':['|', ('tour_type_boolean', '!=', True), ('status', 'not in', ['Pending'])]}"/>
                                    <button name="re_apply" string="ReApply" type="object" class="btn-success" attrs="{'invisible':['|', ('tour_type_boolean', '=', True), ('status', '!=', 'Rejected')]}"/>
                                </tree>
                                <form>
                                    <group>
