        <record id="view_group_tour_ticket_config_tree" model="ir.ui.view">
            <field name="name">view.group_tour_ticket_config.tree</field>
            <field name="model">group_tour_ticket_config</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="ticket_type"/>
                    <field name="company_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                    <field name="currency_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" invisible="1"/>
                    <field name="ticket_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </tree>
            </field>
        </record>


        <record id="action_group_tour_ticket_config" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Ticket Price Configuration</field>
            <field name="res_model">group_tour_ticket_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record id="action_kw_tour_others_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Apply Group Tour</field>
            <field name="res_model">kw_tour_others</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('create_uid', '=', uid)]</field>
            <field name="target">current</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_tour.view_kw_tour_others_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_tour.view_kw_tour_others_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tour found.
                </p>
            </field>
        </record>


        <record id="kw_tour_others_take_action" model="ir.actions.act_window">
            <field name="name">Group Tour Take Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_tour_others</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('state','=','Applied')]</field>
            <field name="context">{'create': False,'edit':False,'delete':False}</field>
            <field name="view_ids" eval="[(5, 0, 0),
               (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_tour.view_kw_tour_others_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_tour.view_kw_tour_others_form')})]"/>
        </record>

        <menuitem id="menu_kw_tour_others_apply"
                  name="Apply Group Tour"
                  parent="kw_tour_apply_menu"
                  sequence="4"
                  action="action_kw_tour_others_act_window"
                  groups="kw_tour.group_kw_tour_others_user"/>

        <menuitem id="menu_kw_tour_others_take_action"
                  name="Group Tour Take Action"
                  parent="kw_tour_apply_menu"
                  sequence="5"
                  action="kw_tour_others_take_action"
                  groups="kw_tour.group_kw_tour_others_manager_take_action"/>

        <menuitem id="menu_group_tour_config_action"
                  name="Tour Ticket Configuration"
                  parent="kw_tour_config_menu"
                  sequence="16"
                  action="action_group_tour_ticket_config"
                  groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance"/>


    </data>
</odoo>