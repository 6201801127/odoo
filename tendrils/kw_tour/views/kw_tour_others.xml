<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_others_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_other.tree</field>
            <field name="model">kw_tour_others</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree import="false" delete="false">
                    <field name="group_tour_code"/>
                    <field name="tour_type_new"/>
                    <field name="tour_type_id"/>
                    <field name="purpose"/>
                    <field name="date_travel"/>
                    <field name="city_id" invisible="1"/>
                    <field name="to_city_id"/>
                    <field name="date_return"/>
                    <field name="budget_head_id"/>
                    <field name="travel_arrangement"/>
                    <field name="state"/>
                    <field name="approver_btn_boolean" invisible="1"/>
                    <field name="department_id" invisible="1"/>
                    <field name="total_budget_expense" invisible="1"/>
                    <field name="can_apply_inr" invisible="1"/>
                    <field name="can_apply_usd" invisible="1"/>
                    <field name="api_exchange_rate" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_others_form" model="ir.ui.view">
