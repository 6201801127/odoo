<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_settlement_total_expense_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_total_expense.tree</field>
            <field name="model">kw_tour_settlement_total_expense</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_tour_settlement_total_expense_tree">
                    <field name="expense_id" />
                    <field name="travel_prerequisite_id" />
                    <field name="amount_inr" sum="Total"  options="{'currency_field':'domestic_currency_id'}" widget="monetary"/>
                    <field name="amount_usd" sum="Total" options="{'currency_field':'international_currency_id'}" widget="monetary"/>
                    <field name="domestic_currency_id" invisible="1"/>
                    <field name="international_currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_settlement_total_expense_form" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_total_expense.form</field>
            <field name="model">kw_tour_settlement_total_expense</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="kw_tour_settlement_total_expense_form">
                    <sheet>
                        <group>
                            <field name="expense_id" />
                            <field name="travel_prerequisite_id" />
                            <field name="amount_inr" sum="Total"  options="{'currency_field':'domestic_currency_id'}" widget="monetary"/>
                            <field name="amount_usd" sum="Total" options="{'currency_field':'international_currency_id'}" widget="monetary"/>
                            <field name="domestic_currency_id" invisible="1"/>
                            <field name="international_currency_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
    