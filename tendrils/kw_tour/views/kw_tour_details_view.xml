<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_kw_tour_details_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_details.tree</field>
            <field name="model">kw_tour_details</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="from_date"/>
                    <field name="from_time" />
                    <field name="from_city_id"/>
                    <field name="to_date" />
                    <field name="to_time" />
                    <field name="to_city_id"/>
                    <field name="to_city_class"/>
                    <field name="accomodation_arrangement"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_details_form" model="ir.ui.view">
            <field name="name">view.kw_tour_details.form</field>
            <field name="model">kw_tour_details</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                </script>
                <style>
                    .btn-primary:not([class*="o_select_file_button"]):nth-child(2){
                        display:none !important;
                    }
                </style>
                    <sheet>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="from_city_currency_id" invisible="1"/>
                            <field name="to_city_currency_id" invisible="1"/>
                            <group string="From">
                                <field name="from_date" autocomplete='off'/>
                                <field name="from_time" attrs="{'required':['|','|',('parent.travel_arrangement','=','Self'),('to_time','!=',False),('state','=','Approved')]}"/>
                                <field name="from_city_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="from_country_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            </group>
                            <group string="To">
                                <field name="to_date" autocomplete='off' />
                                <field name="to_time" attrs="{'required':['|','|',('parent.travel_arrangement','=','Self'),('from_time','!=',False),('state','=','Approved')]}"/>

                                <field name="to_city_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="to_country_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            </group>
                        </group>
                        <group>
                           <!-- <group string="Travel Arrangement">
                               <field name="travel_arrangement"/>
                               <field name="travel_mode_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"
                              attrs="{'invisible':[('travel_arrangement','=','Company'),('state','in',['Draft','Applied','Forwarded'])],'required':['|',('state','=','Approved') ,'&amp;',('travel_arrangement','=','Self'),('state','in',['Draft','Applied','Forwarded'])]}"/>
                               <field name="currency_id" domain="[('id','in',[from_city_currency_id,to_city_currency_id])]"
                               options="{'no_create_edit': True,'no_open':True,'no_create':True}"
                       attrs="{'invisible':[('travel_arrangement','=','Company'),('state','in',['Draft','Applied','Forwarded'])],'required':['|',('state','=','Approved') ,'&amp;',('travel_arrangement','=','Self'),('state','in',['Draft','Applied','Forwarded'])]}"/>
                               <field name="cost" attrs="{'invisible':[('travel_arrangement','=','Company'),('state','in',['Draft','Applied','Forwarded'])],'required':['|',('state','=','Approved'),'&amp;',('travel_arrangement','=','Self'),('state','in',['Draft','Applied','Forwarded'])]}"/>
                               <field name="document_name" invisible="1"/>
                           <field name="document" attrs="{'invisible':[('travel_arrangement','=','Company'),('state','in',['Draft','Applied','Forwarded'])],'required':[('travel_arrangement','=','Self')]}" filename="document_name"/>
                          </group> -->
                            <group string="Accomodation Arrangement">
                                <field name="accomodation_arrangement"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>