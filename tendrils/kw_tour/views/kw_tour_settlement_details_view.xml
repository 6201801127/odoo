<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_settlement_details_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_details.tree</field>
            <field name="model">kw_tour_settlement_details</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Tour Settlement Details">
                    <field name="settlement_id" invisible="1"/>
                    <!-- <field name="employee_id" invisible="context.get('show_employee',True)"/> -->
                    <field name="from_date" />
                    <field name="to_date" />
                    <field name="city_id" />
                    <field name="expense_id" invisible="1"/>
                    <field name="expense_name"/>
                    <field name="description" />
                    <field name="currency_id"/>
                    <field name="amount_actual" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <field name="amount_claiming" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <!-- <field name="amount_claiming" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" invisible="context.get('show_employee',True)"/> -->
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_settlement_details_form" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_details.form</field>
            <field name="model">kw_tour_settlement_details</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form string="Tour Settlement Details">
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>
                    <style>
                    .modal-footer > .btn-primary:nth-child(2){
                        display:none !important;
                    }
                    </style>
                    <sheet>
                        <group>
                            <field name="expense_code" invisible="1"/>
                            <field name="city_currency_ids" invisible="1"/>
                            <field name="from_date" autocomplete="off"/>
                            <field name="to_date" autocomplete="off"/>
                            <field name="no_of_nights" />
                            <field name="no_of_days_leave"/>
                            <field name="city_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="expense_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <!-- <field name="expense_name" /> -->
                            <field name="misc_expense" attrs="{'invisible': [('expense_code','!=','misc')],'required': [('expense_code','=','misc')]}"/>
                            <field name="da_category_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                   attrs="{'invisible': [('expense_code','!=','da')],'required': [('expense_code','=','da')]}"/>
                            <field name="description"/>
                            <field name="currency_id" domain="[('id','in',city_currency_ids)]" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="amount_actual"/>
                            <field name="amount_claiming"/>
                            <field name="status"/>
                            <field name="document"/>
                            <field name="doc_description"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_settlement_details_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Settlement Details</field>
            <field name="res_model">kw_tour_settlement_details</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'show_employee':True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Sorry no Tour Settlement found..
                </p>
            </field>
        </record>

    </data>
</odoo>