<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_ancillary_expense_details_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_ancillary_expense_details.tree</field>
            <field name="model">kw_tour_ancillary_expense_details</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="ancillary_expense_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                    <field name="amount"/>
                    <field name="currency_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_ancillary_expense_details_form" model="ir.ui.view">
            <field name="name">view.kw_tour_ancillary_expense_details.form</field>
            <field name="model">kw_tour_ancillary_expense_details</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <group>
                        <group>
                            <field name="ancillary_expense_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="amount"/>
                            <field name="currency_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="description" />
                        </group>
                        <group>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>