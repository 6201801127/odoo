<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_kw_tour_travel_ticket_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_travel_ticket.tree</field>
            <field name="model">kw_tour_travel_ticket</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="booking_date"/>
                    <field name="travel_mode_id"/>
                    <field name="currency_id"/>
                    <field name="cost" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <field name="service_charges" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <field name="document" filename="document_name" widget="binary"/>
                    <field name="document_name" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_travel_ticket_form" model="ir.ui.view">
            <field name="name">view.kw_tour_travel_ticket.form</field>
            <field name="model">kw_tour_travel_ticket</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <style>
                        .btn-primary:not([class*="o_select_file_button"]):nth-child(2){
                        display:none !important;
                        }
                    </style>
                    <sheet>
                        <group>
                            <field name="booking_date"/>
                            <field name="travel_mode_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="currency_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="cost" options="{'currency_field':'currency_id'}" widget="monetary"/>
                            <field name="service_charges" options="{'currency_field':'currency_id'}" widget="monetary"/>
                            <!-- <field name="ticket_status" /> -->
                            <field name="document" filename="document_name" widget="binary"/>
                            <field name="document_name" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
