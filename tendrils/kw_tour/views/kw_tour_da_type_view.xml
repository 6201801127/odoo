<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_da_type_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_da_type.tree</field>
            <field name="model">kw_tour_da_type</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="DA Type">
                    <field name="expense_type_id" />
                    <field name="category_id" />
                    <field name="percentage" />
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_da_type_form" model="ir.ui.view">
            <field name="name">view.kw_tour_da_type.form</field>
            <field name="model">kw_tour_da_type</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="DA Type">
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <sheet>
                        <group>
                            <group>
                                <field name="expense_type_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" />
                                <field name="category_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="percentage" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_da_type_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">DA Type</field>
            <field name="res_model">kw_tour_da_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Sorry no city found..
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_da_type_menu" name="DA Type" action="action_kw_tour_da_type_act_window" 
        parent="kw_tour_config_menu" sequence="5" groups="kw_tour.group_kw_tour_admin"/>
    
    </data>
</odoo>