<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_guest_house_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_guest_house.tree</field>
            <field name="model">kw_tour_guest_house</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Guest House" delete="false">
                    <field name="country_id" />
                    <field name="city_id" />
                    <field name="name" />
                    <field name="address" />
                    <field name="spoc_person_id" />
                    <field name="contact_person_id" widget='many2many_tags'/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_guesthouse_master_form" model="ir.ui.view">
            <field name="name">view.kw_tour_guest_house.form</field>
            <field name="model">kw_tour_guest_house</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Guest House" delete="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <group>
                                <field name="country_id"  options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="city_id"  options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="name" />
                                <field name="address" />
                                <field name="spoc_person_id"  options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="contact_person_id" options="{'no_edit': True,'no_open':True,'no_create':True}" widget='many2many_tags' />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_guest_house_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Guest House</field>
            <field name="res_model">kw_tour_guest_house</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Sorry no Guest House found..
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_guest_house_menu" name="Guest House" action="action_kw_tour_guest_house_act_window" parent="kw_tour_config_menu" sequence="10" groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_travel_desk"/>
    
    </data>
</odoo>