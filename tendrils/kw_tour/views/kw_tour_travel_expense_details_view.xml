<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_travel_expense_details_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_travel_expense_details.tree</field>
            <field name="model">kw_tour_travel_expense_details</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Tour travel expense details">
                    <field name="expense_id" />
                    <field name="amount_domestic" />
                    <field name="amount_international" />
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_travel_expense_details_form" model="ir.ui.view">
            <field name="name">view.kw_tour_travel_expense_details.form</field>
            <field name="model">kw_tour_travel_expense_details</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Tour travel expense details">
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>

                    <group>
                        <field name="expense_id" />
                        <field name="amount_domestic" />
                        <field name="amount_international" />
                    </group>

                </form>
            </field>
        </record>

        <record id="action_kw_tour_travel_expense_details_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Type</field>
            <field name="res_model">kw_tour_travel_expense_details</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  No tour travel expense details found..
                </p>
            </field>
        </record>

    </data>
</odoo>