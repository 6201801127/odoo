<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Form view for tour approve remark -->
        <record id="view_kw_tour_approve_remark_form" model="ir.ui.view">
            <field name="name">view.kw_tour_approve_remark.form</field>
            <field name="model">kw_tour</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <field name="to_disbursed_inr" invisible="1"/>
                    <field name="to_disbursed_usd" invisible="1"/>
                    <field name="end_date_over" invisible="1"/>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="own_record" invisible="1"/>
                                <field name="is_valid_authority" invisible="1"/>
                                <field name="travel_desk_access" invisible="1"/>
                                <field name="finance_access" invisible="1"/>
                                <field name="remark" required="1"/>
                            </p>
                            <button type="object" name="action_approve_tour" class="text-center btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <!-- Form view for tour forward remark -->
        <record id="view_kw_tour_forward_remark_form" model="ir.ui.view">
            <field name="name">view.kw_tour_forward_remark.form</field>
            <field name="model">kw_tour</field>
            <field name="type">form</field>
