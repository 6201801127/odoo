                    </script>
                    <field name="to_disbursed_inr" invisible="1"/>
                    <field name="to_disbursed_usd" invisible="1"/>
                    <field name="end_date_over" invisible="1"/>

                    <group>
                        <field name="create_uid" invisible="1"/>
                        <field name="current_user" invisible="1"/>
                        <field name="own_record" invisible="1"/>
                        <field name="is_valid_authority" invisible="1"/>
                        <field name="travel_desk_access" invisible="1"/>
                        <field name="finance_access" invisible="1"/>

                        <field name="approver_id" required="1" options="{'no_create': True,'no_open':True,'no_create_edit':True}" 
                        domain="[('user_id','not in',[create_uid,current_user])]"/>
                        <field name="remark" required="1"/>

                    </group>
                    <div class="text-center mx-auto">
                        <button type="object" name="action_forward_tour" class="btn btn-primary">Submit</button>
                    </div>

                </form>
            </field>
        </record>


