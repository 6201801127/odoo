<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_budget_head_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_budget_head.tree</field>
            <field name="model">kw_tour_budget_head</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="tour_type"/>
                    <field name="name"/>
<!--                    <field name="account_sub_head_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
                    <field name="code"/>
                    <field name="kw_id"/>
                </tree>
            </field>
        </record>

        <record id="action_kw_tour_budget_head_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Budget Head</field>
            <field name="res_model">kw_tour_budget_head</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No budget head found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_budget_head_menu"
                  name="Budget Head"
                  action="action_kw_tour_budget_head_act_window"
                  parent="kw_tour_config_menu" groups="kw_tour.group_kw_tour_admin,group_kw_tour_finance"/>

    </data>
</odoo>
