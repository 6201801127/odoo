<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_city_days_spend_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_city_days_spend.tree</field>
            <field name="model">kw_tour_city_days_spend</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="city_id" />
                    <field name="no_of_nights" />
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_city_days_spend_form" model="ir.ui.view">
            <field name="name">view.kw_tour_city_days_spend.form</field>
            <field name="model">kw_tour_city_days_spend</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <group>
                        <field name="city_id" />
                        <field name="no_of_nights" />
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>