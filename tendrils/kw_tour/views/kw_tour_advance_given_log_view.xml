<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_advance_given_log_form" model="ir.ui.view">
            <field name="name">view.kw_tour_advance_given_log.form</field>
            <field name="model">kw_tour_advance_given_log</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="kw_tour_advance_given_log">
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="create_uid"/>
                                <field name="create_date"/>
                                <field name="requested_inr"/>
                                <field name="old_amount_inr"/>
                                <field name="disbursed_amount_inr"/>
                                <field name="new_amount_inr"/>
                            </group>
                            <group>
                                <field name="requested_usd"/>
                                <field name="old_amount_usd"/>
                                <field name="disbursed_amount_usd"/>
                                <field name="new_amount_usd"/>
                                <field name="exchange_rate"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_kw_tour_advance_given_log_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_advance_given_log.tree</field>
            <field name="model">kw_tour_advance_given_log</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree import="false" create="false" delete="false">
                    <field name="create_date" string="Date"/>
                    <field name="create_uid" string="Disbursed By"/>
                    <field name="disbursed_amount_inr"/>
                    <field name="disbursed_amount_usd"/>
                    <field name="exchange_rate"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>