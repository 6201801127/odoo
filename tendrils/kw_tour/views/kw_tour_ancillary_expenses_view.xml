<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="view_kw_tour_ancillary_expenses_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_ancillary_expenses.tree</field>
            <field name="model">kw_tour_ancillary_expenses</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Ancillary Expenses" delete="false">
                    <field name="name"/>
                    <field name="no_of_days"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_ancillary_expenses_form" model="ir.ui.view">
            <field name="name">view.kw_tour_ancillary_expenses.form</field>
            <field name="model">kw_tour_ancillary_expenses</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form string="Ancillary Expenses" delete="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="no_of_days"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_ancillary_expenses_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Ancillary Expenses</field>
            <field name="res_model">kw_tour_ancillary_expenses</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No ancillary expense found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_ancillary_expenses_menu" 
        name="Ancillary Expenses" 
        action="action_kw_tour_ancillary_expenses_act_window" 
        parent="kw_tour_config_menu" groups="kw_tour.group_kw_tour_admin"/>

    </data>
</odoo>