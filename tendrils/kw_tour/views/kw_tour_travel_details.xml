<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_travel_details_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_travel_details.tree</field>
            <field name="model">kw_tour_travel_details</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="arrangement"/>
                    <field name="travel_date"/>
                    <field name="travel_mode_id"/>
                    <field name="currency_id"/>
                    <field name="cost"/>
                    <field name="document"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_travel_details_form" model="ir.ui.view">
            <field name="name">view.kw_tour_travel_details.form</field>
            <field name="model">kw_tour_travel_details</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>c
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <sheet>
                        <group>
                            <field name="arrangement" />
                            <field name="travel_date" attrs="{'required': [('arrangement','=', 'Company')],'invisible': [('arrangement','=', 'Self')]}"/>
                            <field name="travel_mode_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"
                            attrs="{'required': [('arrangement','=', 'Company')],'invisible': [('arrangement','=', 'Self')]}"/>
                            <field name="currency_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"
                            attrs="{'required': [('arrangement','=', 'Company')],'invisible': [('arrangement','=', 'Self')]}"/>
                            <field name="cost" attrs="{'required': [('arrangement','=', 'Company')],'invisible': [('arrangement','=', 'Self')]}"/>
                            <field name="document" attrs="{'invisible': [('arrangement','=', 'Self')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>