<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_classification_expense_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_classification_expense.tree</field>
            <field name="model">kw_tour_classification_expense</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Expense Classifiaction Type">
                    <field name="classification_id" />
                    <field name="expense_type_id" />
                    <!-- <field name="employee_level_id" widget="many2many_tags"/> -->
                    <field name="employee_grade_id" widget="many2many_tags"/>
                    <field name="currency_type_id" />
                    <field name="amount" />
                </tree>
            </field>
        </record>

        <record id="view_kkw_tour_classification_expense_form" model="ir.ui.view">
            <field name="name">view.kw_tour_classification_expense.form</field>
            <field name="model">kw_tour_classification_expense</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Classfication Type">
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <group>
                        <group>
                            <field name="expense_type_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <!-- <field name="employee_level_id" widget="many2many_tags"/> -->
                            <field name="employee_grade_id" widget="many2many_tags" options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="currency_type_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="amount" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_classification_expense_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Expense Classfication Type</field>
            <field name="res_model">kw_tour_classification_expense</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No classfication type found..
                </p>
            </field>
        </record>

    </data>
</odoo>