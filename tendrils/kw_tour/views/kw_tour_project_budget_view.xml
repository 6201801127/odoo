<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_project_budget_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_project_budget.tree</field>
            <field name="model">kw_tour_project_budget</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="budget_head_id"/>
<!--                    <field name="fiscal_year"/>-->
                    <field name="project_id" invisible='1'/>
                    <field name="project_code"/>
                    <field name="project_name"/>
                    <field name="actual_project_id" invisible="1"/>
                    <field name="budget_amount"/>
                    <field name="spent_amount"/>
                    <field name="remaining_amount"/>
                    <field name="threshold_limit"/>
                    <field name="budget_perc"/>
                    <button name="action_view_details" string="View Details" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="kw_tour_project_budget_form_view" model="ir.ui.view">
            <field name="name">view.kw_tour_project_budget.form</field>
            <field name="model">kw_tour_project_budget</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="budget_head_id" readonly="1"
                                       options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
<!--                                <field name="fiscal_year" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>-->
                                <field name="project_id" readonly="1"
                                       options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="actual_project_id" invisible="1"/>
                                <field name="budget_amount" readonly="1"/>
                                <field name="spent_amount"/>
                                <field name="remaining_amount"/>
                                <field name="threshold_limit"/>
                                <field name="budget_perc"/>
                            </group>
                        </group>
                        <group>
                            <field name="tour_ids" invisible="1"/>
                            <field name="settlement_ids" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_tour_project_budget_search_view" model="ir.ui.view">
            <field name="name">view.kw_tour_project_budget.search</field>
            <field name="model">kw_tour_project_budget</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="project_id"/>
                    <field name="budget_head_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_budget_head" string="Budget Head" domain="[]"
                                context="{'group_by':'budget_head_id'}"/>
                        <filter name="group_by_project" string="Project" domain="[]"
                                context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kw_tour_project_budget_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project Budget</field>
            <field name="res_model">kw_tour_project_budget</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'create': False}</field>
            <field name="search_view_id" ref="kw_tour_project_budget_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No project budget found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_project_budget_menu"
                  name="Project Budget"
                  action="action_kw_tour_project_budget_act_window"
                  parent="kw_tour_report" groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance,kw_tour.group_kw_tour_super_manager"/>

    </data>
</odoo>
