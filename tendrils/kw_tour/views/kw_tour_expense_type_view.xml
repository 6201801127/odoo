<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_expense_type_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_expense_type.tree</field>
            <field name="model">kw_tour_expense_type</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Expenses Type" delete="false">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        
        <record id="view_kw_tour_expense_type_form" model="ir.ui.view">
            <field name="name">view.kw_tour_expense_type.form</field>
            <field name="model">kw_tour_expense_type</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Expenses Type" delete="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code"/>
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_kw_tour_expense_type_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Expense Type</field>
            <field name="res_model">kw_tour_expense_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Sorry no city found...
                </p>
            </field>
        </record>
        
        <menuitem id="kw_tour_expense_type_menu" 
        name="Expense Type" 
        action="action_kw_tour_expense_type_act_window"
        parent="kw_tour_config_menu" groups="kw_tour.group_kw_tour_admin"
        sequence="2" />
        
    </data>
</odoo>