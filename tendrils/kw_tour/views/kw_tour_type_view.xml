<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_type_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_type.tree</field>
            <field name="model">kw_tour_type</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Tour Type" delete="false">
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_type_form" model="ir.ui.view">
            <field name="name">view.kw_tour_type.form</field>
            <field name="model">kw_tour_type</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Tour Type" delete="false">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_type_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Type</field>
            <field name="res_model">kw_tour_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No city found..
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_type_menu" name="Tour Type" action="action_kw_tour_type_act_window" parent="kw_tour_config_menu" sequence="1" groups="kw_tour.group_kw_tour_admin"/>


        <!--        Tour Budget account Code tag view-->

        <record id="view_tour_budget_account_config_tree" model="ir.ui.view">
            <field name="name">view.tour_budget_account_config.tree</field>
            <field name="model">tour_budget_account_config</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="" delete="false" editable="top">
                    <field name="budget_type"  required="1"/>
                    <field name="account_code_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                </tree>
            </field>
        </record>



        <record id="action_tour_budget_account_config_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Budget Travel Ledger Config</field>
            <field name="res_model">tour_budget_account_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Budget Account found..
                </p>
            </field>

        </record>


    <menuitem id="kw_tour_budget_account_config_menu" name="Tour Budget Account Config" action="action_tour_budget_account_config_act_window" parent="kw_tour_config_menu" sequence="99" groups="kw_tour.group_kw_tour_admin,group_kw_tour_finance"/>


    </data>
</odoo>