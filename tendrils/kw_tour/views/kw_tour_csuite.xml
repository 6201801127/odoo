<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_tour_csuite_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_csuite.tree</field>
            <field name="model">kw_tour_c_suite</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="company_id"
                           options="{'no_open':True, 'no_create':True, 'no_edit':True, 'no_delete':True}"/>
                    <field name="department_id"
                           options="{'no_open':True,'no_create':True, 'no_edit':True, 'no_delete':True}"/>
                    <field name="employee_ids" widget="many2many_tags"
                           options="{'no_open':True,'no_create':True, 'no_edit':True, 'no_delete':True}"/>
                    <field name="active" widget="toggle_button"/>
                </tree>
            </field>
        </record>

        <record id="kw_tour_csuite" model="ir.actions.act_window">
            <field name="name">Tour C-Suite Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_tour_c_suite</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_csuite_config_action"
                  name="Tour Settlement Configuration"
                  parent="kw_tour.kw_tour_config_menu"
                  sequence="17"
                  action="kw_tour.kw_tour_csuite"
                  groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance"/>
    </data>
</odoo>
