<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_treasury_budget_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_treasury_budget.tree</field>
            <field name="model">kw_tour_treasury_budget</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree import="false">   <!-- create="false"-->
                    <!-- <field name="budget_head_id"/> -->
                    <field name="company_id"/>
                    <field name="currency_id" invisible='1'/>
                    <field name="department_id"/>
                    <field name="fiscal_year_id"/>
                    <field name="budget_amount" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <field name="spent_amount" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <field name="remaining_amount" options="{'currency_field':'currency_id'}" widget="monetary"/>
                    <field name="tour_ids" invisible="1"/>
                    <!--                    <field name="settlement_ids" invisible="1"/>-->
                </tree>
            </field>
        </record>

        <record id="kw_tour_treasury_budget_view" model="ir.ui.view">
            <field name="name">view.kw_tour_treasury_budget.form</field>
            <field name="model">kw_tour_treasury_budget</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <!-- <field name="budget_head_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/> -->
                                <field name="company_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="currency_id" invisible='1'/>
                                <field name="department_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                                <field name="fiscal_year_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                                <field name="budget_amount" required="1" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                <field name="spent_amount" readonly="1" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                <field name="remaining_amount" required="1" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                <field name="tour_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="employee_id"/>
                                        <field name="tour_type_id"/>
                                        <field name="create_date" string="Applied On"/>
                                        <field name="create_uid" string="Applied By"/>
                                        <field name="date_travel"/>
                                        <field name="date_return"/>
                                        <field  name="total_budget_expense" sum="total" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                    </tree>
                                </field>
                                <field name="settlement_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="employee_id"/>
                                        <field name="tour_type_id"/>
                                        <field name="create_date" string="Applied On"/>
                                        <field name="create_uid" string="Applied By"/>
                                        <field name="date_travel"/>
                                        <field name="date_return"/>
                                        <field name="paid_domestic" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                        <field name="paid_international" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                        <field name="receivable_inr" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                        <field name="receivable_usd" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                        <field  name="total_budget_expense" sum="total" options="{'currency_field':'currency_id'}" widget="monetary"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_tour_treasury_budget_search_view" model="ir.ui.view">
            <field name="name">view.kw_tour_treasury_budget.search</field>
            <field name="model">kw_tour_treasury_budget</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="company_id"/>
                    <field name="fiscal_year_id"/>
                    <field name="budget_amount"/>
                    <field name="department_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_company" string="Company"  context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_kw_tour_treasury_budget_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Treasury Budget</field>
            <field name="res_model">kw_tour_treasury_budget</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'delete':False}</field>   <!--'create': False,-->
            <field name="search_view_id" ref="kw_tour_treasury_budget_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No project budget found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_treasury_budget_menu"
                  name="Treasury Budget"
                  action="action_kw_tour_treasury_budget_act_window"
                  parent="kw_tour_config_menu"
                  groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance"
                  sequence="15"
        />

    </data>
</odoo>
