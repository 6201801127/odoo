<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_view_all_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_view_all.tree</field>
            <field name="model">kw_tour</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree import="false" create="false" delete="false">
                    <field name="code"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="dept_id"/>
                    <field name="tour_type_id"/>
                    <field name="date_travel"/>
                    <field name="date_return"/>
                    <field name="city_id"/>
                    <field name="state" invisible="1"/>
                    <field name="actual_state"/>
                    <field name="pending_at"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_view_all_form" model="ir.ui.view">
            <field name="name">view.kw_tour_view_all.form</field>
            <field name="model">kw_tour</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false">
                
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <script>
                        $(document).ready(function(){
                            $(".o_statusbar_buttons").hide();
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <group string="Tour Type">
                                <field name="end_date_over" invisible="1"/>

                                <field name="code"/>
                                <field name="own_record" invisible="1"/>
                                <field name="is_valid_authority" invisible="1"/>
                                <field name="cancellation_id" invisible="1"/>
                                <field name="cancellation_status" invisible="1"/>
                                <field name="ra_access" invisible="1"/>
                                <field name="admin_access" invisible="1"/>
                                <field name="forward" invisible="1"/>
                                <field name="travel_desk_access" invisible="1"/>
                                <field name="finance_access" invisible="1"/>
                                <field name="can_apply_inr" invisible="1"/>
                                <field name="can_apply_usd" invisible="1"/>
                                <field name="tour_type_new"  readonly="1"/>
                                <field name="tour_type_id" readonly="1" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="project" invisible="1"/>
                                <field name="parent_id" attrs="{'invisible': [('parent_id','=', False)]}" readonly="1"/>
                                <field name="status" string="Type" attrs="{'invisible': [('status','=', 'Tour')]}" readonly="1"/>
                                <field name="project_type" attrs="{'invisible': [('project','=', False)]}" readonly="1"/>

                                <field name="project_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" 
                                attrs="{'invisible': [('project','=', False)]}" readonly="1"/>

                                <field name="purpose" readonly="1"/>
                                <field name="date_travel" readonly="1"/>
                                <field name="date_return"  readonly="1" />
                                <field name="budget_head" attrs="{'invisible': [('budget_head', '=', False)]}"
                                       readonly="1"/>
                                <field name="budget_head_id" attrs="{'invisible': [('budget_head', '!=', False)]}"
                                       options="{'no_create_edit': True,'no_open':True,'no_create':True}"
                                       readonly="1"/>
                                <field name="city_id" readonly="1" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                                <field name="travel_arrangement" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_budget_expense" invisible="1"/>
                            </group>
                            
                            <field name="last_city_id" invisible="1"/>
                            <field name="last_travel_date" invisible="1"/>
                        </group>
                        <group string="Tour Details">
                            <field name="tour_detail_ids" nolabel="1" readonly="1"/>
                        </group>
                        <group string="Ticket Details" >
                            <field name="travel_ticket_ids" nolabel="1" readonly="1"/>
                        </group>
                        <group >

                            <group invisible='1'>
                                <field name="city_days_spend_ids" nolabel="1" attrs="{'invisible': [('city_days_spend_ids','=', [])]}">
                                    <tree editable="bottom" delete="false" create="false">
                                        <field name="city_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" style="pointer-events:none;"/>
                                        <field name="actual_no" invisible="1"/>
                                        <field name="no_of_nights"/>
                                        
                                    </tree>
                                </field>
                            </group>
                        </group>
<!--                        <group string="Travel Arrangements">-->
<!--                            <field name="tour_travel_detail_ids" nolabel="1" readonly="1">-->
<!--                                <tree>-->
<!--                                    <field name="from_city_id" />-->
<!--                                    <field name="from_date"/>-->
<!--                                    <field name="to_city_id"/>-->
<!--                                    <field name="to_date" />-->
<!--                                    <field name="travel_mode_id"/>-->
<!--                                    <field name="currency_id"/>-->
<!--                                    <field name="cost"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </group>-->
                        <group>
                            <group string="Accomodation Arrangements">
                                <field name="accomodation_ids" nolabel="1" readonly="1" 
                                attrs="{'readonly': [('state','not in', ['Draft','Applied','Approved'])]}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Travel Expense Details">
                                <field name="travel_expense_details_ids"  nolabel="1" readonly="1">
                                    <tree edit="false" delete="false" create="false">
                                        <field name="expense_id"/>
                                        <field name="amount_domestic" sum="Total"/>
                                        <field name="amount_international" sum="Total"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <group>
                         <group>
                            <group string="Blocked Budget Expenses"  >
                                <field name="total_budget_expense" style="pointer-events:none;" widget="monetary" options="{'currency_field':'currency_id'}"/>
                            </group>
                        </group>

                            <group string="Ancillary Expenses">
                                <field name="ancillary_expense_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="ancillary_expense_id"/>
                                        <field name="amount"/>
                                        <field name="currency_id"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="baggage_details"/>

                                <field name="advance" readonly="1" attrs="{'invisible':[('can_apply_inr','=',False)]}" widget="monetary" options="{'currency_field':'currency_id'}"/>
                                <field name="advance_usd" readonly="1" attrs="{'invisible':[('can_apply_usd','=',False)]}"/>

                                <field name="disbursed_inr" readonly="1" 
                                    attrs="{'invisible':['|',('can_apply_inr','=',False),'&amp;',('status','!=','Rescheduled'),'&amp;',('status','=','Tour'),('state','not in',['Finance Approved','Cancelled'])]}"/>
                                <field name="disbursed_usd" readonly="1" 
                                    attrs="{'invisible':['|',('can_apply_usd','=',False),'&amp;',('status','!=','Rescheduled'),'&amp;',('status','=','Tour'),('state','not in',['Finance Approved','Cancelled'])]}"/>
                                
                                <field name="exchange_rate" autocomplete="off" readonly="1" 
                                attrs="{'invisible':['|',('can_apply_usd','=',False),'&amp;',('status','!=','Rescheduled'),'&amp;',('status','=','Tour'),('state','not in',['Finance Approved','Cancelled'])]}"/>

                                <field name="public_view" readonly="1"/>
                            </group>

                            <group string="Advance Disbursed Log" attrs="{'invisible':[('state','not in',['Finance Approved','Cancelled'])]}">
                                <field name="advance_ids" readonly="1" nolabel="1"/>
                            </group>
                        </group>
                        <group>
                            
                            <group string="Action Logs">
                                <field name="action_log_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="employee_id"/> 
                                        <field name="state"/>
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kw_tour_view_all_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">View Tour Status</field>
            <field name="res_model">kw_tour</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'filter_tour':1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_tour.view_kw_tour_view_all_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_tour.view_kw_tour_view_all_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tour found.
                </p>
            </field>
        </record>

        <menuitem id="menu_kw_tour_view_all" name="View Status" sequence="3"
        parent="kw_tour_apply_menu"  action="action_kw_tour_view_all_act_window"/>

    </data>
</odoo>