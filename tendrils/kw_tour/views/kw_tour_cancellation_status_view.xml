<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_cancellation_status_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation_status.tree</field>
            <field name="model">kw_tour_cancellation</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree create="false" import="false" delete="false">
                    <field name="code"/>
                    <field name="tour_id"/>
                    <field name="job_id"/>
                    <field name="dept_id"/>
                    <field name="date_travel"/>
                    <field name="date_return"/>
                    <field name="tour_type_id"/>
                    <field name="city_id"/>
                    <field name="reason"/>
                    <field name="state"/>
                    <field name="pending_at"/>
                    
                </tree>
            </field>
        </record>
        
        <record id="view_kw_tour_cancellation_status_form" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation_status.form</field>
            <field name="model">kw_tour_cancellation</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" import="false" delete="false" duplicate="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".o_statusbar_buttons").hide();
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                        <field name="state"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="ra_access" invisible="1"/>
                            <field name="code"/>
                            <field name="tour_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" readonly="1"/>
                            <field name="purpose"/>
                            <field name="date_travel"/>
                            <field name="date_return"/>
                            <field name="tour_type_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="city_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="travel_arrangement"/>
                            <field name="reason"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_kw_tour_cancellation_status_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">View Status</field>
            <field name="res_model">kw_tour_cancellation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'filter_tour_cancellation':1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_kw_tour_cancellation_status_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_kw_tour_cancellation_status_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No tour cancellation found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_cancellation_status_menu" name="View Status" 
        parent="kw_tour_cancellation" sequence="2" 
        action="action_kw_tour_cancellation_status_act_window"/>
        
    </data>
</odoo>