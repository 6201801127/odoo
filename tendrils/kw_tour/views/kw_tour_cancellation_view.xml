<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_cancellation_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation.tree</field>
            <field name="model">kw_tour_cancellation</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree create="false" import="false" delete="false">
                    <field name="state" invisible="1"/>
                    <field name="code"/>
                    <field name="tour_id"/>
                    <field name="job_id"/>
                    <field name="dept_id"/>
                    <field name="date_travel"/>
                    <field name="date_return"/>
                    <field name="tour_type_id"/>
                    <field name="city_id"/>
                    <field name="reason"/>
                    <button name="take_action" string="Take Action" class="oe_highlight " type="object"/>
                </tree>
            </field>
        </record>

        
        <record id="view_kw_tour_cancellation_form" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation.form</field>
            <field name="model">kw_tour_cancellation</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" import="false" delete="false" duplicate="false" edit="false">
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                </script>
                    <header>
                        <field name="state"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="ra_access" invisible="1"/>
                            <field name="code"/>
                            <field name="tour_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"  readonly="1"/>
                            <field name="tour_type_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" />
                            <field name="purpose"/>
                            <field name="date_travel"/>
                            <field name="date_return"/>
                            <field name="city_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" />
                            <field name="travel_arrangement"/>
                        </group>
                        <group>
                            <group>
                                <field name="reason"/>
                            </group>
                            
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="action_kw_tour_cancellation_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Take Action</field>
            <field name="res_model">kw_tour_cancellation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_kw_tour_cancellation_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_kw_tour_cancellation_form')})]"/>
            <field name="context">{'take_action_tour_cancellation':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No tour cancellation found...
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_cancellation_menu" name="Take Action" 
        parent="kw_tour_cancellation" sequence="1" 
        action="action_kw_tour_cancellation_act_window"/>

        <!-- Remark form -->
        <record id="view_kw_tour_cancellation_approve_remark_form" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation.approve_remark.form</field>
            <field name="model">kw_tour_cancellation</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <field name="state" invisible="1"/>
                    <field name="ra_access" invisible="1"/>
                    <field name="tour_id" invisible="1"/>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="remark" required="1"/>
                            </p>
                        </div>
                    </div>
                    <div class="text-center mx-auto">
                        <button type="object" name="action_approve_cancellation" 
                        class="text-center btn btn-primary">Submit</button>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_kw_tour_cancellation_reject_remark_form" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation.reject_remark.form</field>
            <field name="model">kw_tour_cancellation</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <field name="state" invisible="1"/>
                    <field name="ra_access" invisible="1"/>
                    <field name="tour_id" invisible="1"/>

                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="remark" required="1"/>
                            </p>
                            <button type="object" name="action_reject_cancellation" 
                            class="text-center btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        
    </data>
</odoo>