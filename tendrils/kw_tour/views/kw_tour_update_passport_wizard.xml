<odoo>
    <data>
        <record id="kw_tour_identity_docs_view_form" model="ir.ui.view">
            <field name="name">Identification Details</field>
            <field name="model">kw_tour_passport_details_wizard</field>
            <field name="arch" type="xml">
                <form string="Identification Details">
                    <sheet>
                        <group>   
                            <group >
                                <!-- <field name="emp_id" invisible="1"/> -->
                                <field name="employee_id" invisible="1"/>
                                <field name="name"/>
                                <field name="date_of_issue" options="{'datepicker':{'maxDate': 'now'}}"/>
                                <field name="renewal_sts"/>
                            </group>
                            <group >
                                <field name="doc_number"/>
                                <field name="date_of_expiry"/>
                                 <field name="uploaded_doc" widget="binary" filename="doc_file_name"/>
                                <div class="file-format-note">(Only .jpeg,.png, .pdf format are allowed.Maximum file size is 4 MB) &#x2063;<span style="color:red;">*</span></div>
                               <field name="doc_file_name" invisible="1"/>
                            </group>
                        </group> 
                    </sheet>
                    <footer>
                        <button name="action_button_view_form" type="object" class="btn btn-success btn-lg">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>
            </field>
        </record>

         <record model="ir.actions.act_window" id="kw_tour_passport_action_window">
            <field name="name">Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_tour_passport_details_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="kw_tour_identity_docs_view_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

         <!-- <menuitem id="kw_tour_employees_passport_menu"
				  name="Employee Passport"
				  parent="kw_tour.kw_tour_emp_passport"
				  action="kw_tour.kw_tour_passport_action_window"
				  sequence="2"/> -->
    </data>
</odoo>