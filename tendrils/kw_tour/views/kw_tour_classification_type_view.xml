<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_tour_classification_type_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_classification_type.tree</field>
            <field name="model">kw_tour_classification_type</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Classifiaction Type" delete="false">
                    <field name="name" />
                    <field name="description"/>
                </tree>
            </field>
        </record>
        
        <record id="view_kw_tour_classification_type_form" model="ir.ui.view">
            <field name="name">view.kw_tour_classification_type.form</field>
            <field name="model">kw_tour_classification_type</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Classfication Type" delete="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" autocomplete="off"/>
                                <field name="description" autocomplete="off"/>
                                <field name="expense_ids">
                                    <tree editable="bottom">
                                        <field name="expense_type_id" options="{'no_create': True,'no_open':True,'no_create_edit':True}"/>
                                        <!-- <field name="tour_type"/> -->
                                        <!-- <field name="employee_level_id" widget="many2many_tags" required="1"/> -->
                                        <field name="employee_grade_id" widget="many2many_tags" required="0" options="{'no_create': True,'no_open':True,'no_edit':True}"/>

                                        <field name="currency_type_id" options="{'no_create': True,'no_open':True,'no_create_edit':True}"/>
                                        <field name="amount" options="{'currency_field': 'currency_type_id'}" widget="monetary"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_kw_tour_classification_type_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Allowances Configuration</field>
            <field name="res_model">kw_tour_classification_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No classfication type found..
                </p>
            </field>
        </record>

        <menuitem id="kw_tour_classifaction_menu" 
        name="Allowances Configuration" 
        action="action_kw_tour_classification_type_act_window"
        parent="kw_tour_config_menu" groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance"
        sequence="3" />
   
    </data>
</odoo>