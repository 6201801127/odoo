<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_settlement_expense_report_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_expense_report.tree</field>
            <field name="model">kw_tour_settlement_expense_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree edit="false" create="false" duplicate="false" import="false">
                    <field name="code" />
                    <field name="employee_id"/>
                    <field name="department"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="date_of_travel"/>
                    <field name="date_of_return"/>
                    <field name="city_id"/>
                    <field name="purpose"/>
                    <field name="ta_inr" sum="Total"/>
                    <field name="ta_usd" sum="Total"/>
                    <field name="da_inr" sum="Total"/>
                    <field name="da_usd" sum="Total"/>
                    <field name="hra_inr" sum="Total"/>
                    <field name="hra_usd" sum="Total"/>
                    <field name="ticket_inr" sum="Total"/>
                    <field name="ticket_usd" sum="Total"/>
                    <field name="misc_inr" sum="Total"/>
                    <field name="misc_usd" sum="Total"/>
                    <field name="hardship_inr" sum="Total"/>
                    <field name="hardship_usd" sum="Total"/>
                    <field name="visa_inr" sum="Total"/>
                    <field name="visa_usd" sum="Total" />
                    <field name="vaccine_inr" sum="Total"/>
                    <field name="vaccine_usd" sum="Total" />
                    <field name="rtpcr_inr" sum="Total"/>
                    <field name="rtpcr_usd" sum="Total" />
                    <field name="amount_total_inr" sum="Total"/>
                    <field name="amount_total_usd" sum="Total" />
                    <field name="state"/>
                    <field name="action_taken_by" />
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_settlement_expense_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_expense_report.pivot</field>
            <field name="model">kw_tour_settlement_expense_report</field>
            <field name="arch" type="xml">
                <pivot string="Tour Settlement Report">
                    <field name="employee_id" type="row"/>
                    <field name="department"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="date_of_travel" type="row"/>
                    <field name="date_of_return"/>
                    <field name="city_id"/>
                    <field name="purpose"/>
                    <field name="ta_inr" type="measure"/>
                    <field name="ta_usd" type="measure"/>
                    <field name="da_inr" type="measure"/>
                    <field name="da_usd" type="measure" />
                    <field name="hra_inr" type="measure" />
                    <field name="hra_usd" type="measure"/>
                    <field name="misc_inr" type="measure" />
                    <field name="misc_usd" type="measure"/>
                    <field name="hardship_inr" type="measure"/>
                    <field name="hardship_usd" type="measure"/>
                    <field name="visa_inr" type="measure"/>
                    <field name="visa_usd" type="measure" />
                    <field name="vaccine_inr" type="measure" />
                    <field name="vaccine_usd" type="measure"/>
                    <field name="rtpcr_inr" type="measure"/>
                    <field name="rtpcr_usd" type="measure" />
                    <!-- <field name="amount_total_inr" type="measure"/>
                    <field name="amount_total_usd" type="measure"/> -->
                </pivot>
            </field>
        </record>

        <record id="view_kw_tour_settlement_expense_report_search" model="ir.ui.view">
            <field name="name">Apply Tour Expense Settlement Search View</field>
            <field name="model">kw_tour_settlement_expense_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="employee_id"/>
                    <field name="department"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="date_of_travel"/>
                    <field name="date_of_return"/>
                    <filter string="Apply Date" name="filter_apply_tour_date" date="date_of_travel"/>
                    <filter string="Return Date" name="filter_apply_tour_return_date" date="date_of_return"/>
                    <filter name="fiscalyr_filter" string="Current Fiscal Year"
                            domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                            context="{}" readonly="1"/>
                    <separator/>
                    <filter string="January" name="january_filter" domain="[('date_of_return', 'like', '-01-%')]"/>
                    <filter string="February" name="february_filter" domain="[('date_of_return', 'like', '-02-%')]"/>
                    <filter string="March" domain="[('date_of_return', 'like', '-03-%')]" name="march_filter"/>
                    <filter string="April" domain="[('date_of_return', 'like', '-04-%')]" name="april_filter"/>
                    <filter string="May" domain="[('date_of_return', 'like', '-05-%')]" name="may_filter"/>
                    <filter string="June" domain="[('date_of_return', 'like', '-06-%')]" name="june_filter"/>
                    <filter string="July" domain="[('date_of_return', 'like', '-07-%')]" name="july_filter"/>
                    <filter string="August" domain="[('date_of_return', 'like', '-08-%')]" name="august_filter"/>
                    <filter string="September" domain="[('date_of_return', 'like', '-09-%')]" name="september_filter"/>
                    <filter string="October" domain="[('date_of_return', 'like', '-10-%')]" name="october_filter"/>
                    <filter string="November" domain="[('date_of_return', 'like', '-11-%')]" name="november_filter"/>
                    <filter string="December" domain="[('date_of_return', 'like', '-12-%')]" name="december_filter"/>
                    <separator/>
                    <filter string="This Month" name="filter_current_month" domain="[('date_of_travel', 'like',context_today().strftime('%Y-%m'))]"/>
                    <group expand="0" string="Group By">
                        <!-- <filter name="state" string="Status" context="{'group_by':'state'}"/> -->
                        <!-- <filter name="group_by_tour_code" string="Tour Reference No." context="{'group_by':'code'}"/> -->
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kw_tour_settlement_expense_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Settlement Expense Report</field>
            <field name="res_model">kw_tour_settlement_expense_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_fiscalyr_filter':1}</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tour settlement report found...
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_kw_tour_settlement_expense_report" name="Tour Settlement Expenditure Report"
                  parent="kw_tour_report" sequence="6" action="action_kw_tour_settlement_expense_report_act_window"
                  groups="kw_tour.group_kw_tour_admin,kw_tour.group_kw_tour_finance,kw_tour.group_kw_tour_super_manager"/> -->

    </data>
</odoo>