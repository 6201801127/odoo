<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_budget_report_view_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_budget_report.tree</field>
            <field name="model">kw_tour_budget_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree edit="false" create="false" duplicate="false" import="false">
                    <field name="code"/>
                    <field name="record_type"/>
                    <field name="employee_id"/>
                    <field name="budget_head_id"/>
                    <field name="project_id"/>
                    <field name="project_code"/>
                    <field name="project_name"/>
                    <field name="date_travel"/>
                    <field name="date_return"/>
                    <field name="purpose"/>
                    <field name="origin_place"/>
                    <!-- <field name="budget_amount"/> -->
                    <field name="total_budget_expense"/>
                    <!-- <field name="remaining_amount"/> -->
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_budget_report_view_pivot" model="ir.ui.view">
            <field name="name">view.kw_tour_budget_report.pivot</field>
            <field name="model">kw_tour_budget_report</field>
            <field name="arch" type="xml">
                <pivot string="Tour Application Report">
                    <field name="purpose" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="view_kw_tour_budget_report_search" model="ir.ui.view">
            <field name="name">Tour Search View</field>
            <field name="model">kw_tour_budget_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="project_id"/>
                    <field name="budget_head_id"/>
                    <field name="code"/>
                    <field name="fiscal_year_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_budget_head_id" string="Budget"
                                context="{'group_by':'budget_head_id'}"/>
                        <filter name="group_by_project_id" string="Project" context="{'group_by':'project_id'}"/>
                        <separator/>
                        <filter name="fiscalyr_filter" string="Current Fiscal Year"
                            domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                            context="{}" readonly="1"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kw_tour_budget_report_view_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Project Budget Report</field>
            <field name="res_model">kw_tour_budget_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_group_by_budget_head_id':1, 'search_default_group_by_project_id': 1}
            </field>
            <field name="search_view_id" ref="view_kw_tour_budget_report_search"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tour Reports found.
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_kw_tour_budget_report_view_report"
                  name="Tour Project Budget Report"
                  parent="kw_tour_report"
                  sequence="4"
                  action="action_kw_tour_budget_report_view_act_window"/> -->

    </data>
</odoo>