<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_cancellation_report_tree" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation_report.tree</field>
            <field name="model">kw_tour_cancellation_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="name" />
                    <field name="designation"/>
                    <field name="department"/>
                    <field name="division"/>
                    <field name="applied_on" widget="date"/>
                    <field name="purpose"/>
                    <field name="state"/>
                    <field name="action_taken_by"/>
                    <button name="action_cancellation_details" string="View Details" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_tour_cancellation_report_search" model="ir.ui.view">
            <field name="name">view.kw_tour_cancellation_report.search</field>
            <field name="model">kw_tour_cancellation_report</field>
            <field name="arch" type="xml">
                <search string="Search Cancellation">
                    <field name="applied_on"/>
                    <field name="name"/>
                    <filter string="Apply Date" name="filter_apply_tour_date" date="applied_on"/>
                    <filter string="This Month" name="filter_current_month" domain="[('applied_on', 'like',context_today().strftime('%Y-%m'))]"/>
                    <filter name="fiscalyr_filter" string="Current Fiscal Year"
                            domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                            context="{}" readonly="1"/>
                    <separator/>
                    <filter string="January" name="january_filter" domain="[('applied_on', 'like', '-01-%')]"/>
                    <filter string="February" name="february_filter" domain="[('applied_on', 'like', '-02-%')]"/>
                    <filter string="March" domain="[('applied_on', 'like', '-03-%')]" name="march_filter"/>
                    <filter string="April" domain="[('applied_on', 'like', '-04-%')]" name="april_filter"/>
                    <filter string="May" domain="[('applied_on', 'like', '-05-%')]" name="may_filter"/>
                    <filter string="June" domain="[('applied_on', 'like', '-06-%')]" name="june_filter"/>
                    <filter string="July" domain="[('applied_on', 'like', '-07-%')]" name="july_filter"/>
                    <filter string="August" domain="[('applied_on', 'like', '-08-%')]" name="august_filter"/>
                    <filter string="September" domain="[('applied_on', 'like', '-09-%')]" name="september_filter"/>
                    <filter string="October" domain="[('applied_on', 'like', '-10-%')]" name="october_filter"/>
                    <filter string="November" domain="[('applied_on', 'like', '-11-%')]" name="november_filter"/>
                    <filter string="December" domain="[('applied_on', 'like', '-12-%')]" name="december_filter"/>
                    <group expand="0" string="Group By">
                        <filter name="state" string="Status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kw_tour_cancellation_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Cancellation Report</field>
            <field name="res_model">kw_tour_cancellation_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_fiscalyr_filter':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No cancellation reports found ...
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_kw_tour_cancellation_report" name="Tour Cancellation Report"
                  parent="kw_tour_report" sequence="2"
                  action="action_kw_tour_cancellation_report_act_window"/> -->

    </data>
</odoo>