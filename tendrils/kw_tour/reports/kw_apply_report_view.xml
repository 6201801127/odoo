<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_apply_tour_reports_view_tree" model="ir.ui.view">
            <field name="name">view.kw_apply_tour_reports.tree</field>
            <field name="model">kw_apply_tour_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree edit="false" create="false"  duplicate="false" import="false">
                    <field name="name" />
                    <field name="desg"/>
                    <field name="dept_name"/>
                    <field name="division"/>
                    <field name="date_of_travel"/>
                    <field name="date_of_return"/>
                    <field name="purpose"/>
                    <field name="origin_place"/>
                    <field name="state" invisible="1"/>
                    <field name="action_taken_by"/>
                    <button name="action_tour_details" string="View Details" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_apply_tour_reports_view_pivot" model="ir.ui.view">
            <field name="name">view.kw_apply_tour_reports.pivot</field>
            <field name="model">kw_apply_tour_report</field>
            <field name="arch" type="xml">
                <pivot string="Tour Application Report">
                    <field name="name" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="view_kw_apply_tour_report_search" model="ir.ui.view">
            <field name="name">Apply Tour Search View</field>
            <field name="model">kw_apply_tour_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="date_of_travel"/>
                    <field name="date_of_return"/>
                    <field name="tour_type_id"/>


                    <separator/>

                    <field name="name"/>

                    <filter name="fiscalyr_filter" string="Current Fiscal Year"
                            domain="['&amp;',('fiscal_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscal_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                            context="{}" readonly="1"/>
                    <filter string="Apply Date" name="filter_apply_tour_date" date="date_of_travel"/>
                    <filter string="This Month" name="filter_current_month" domain="['|','|',('date_of_travel', 'like',context_today().strftime('%Y-%m')),
                                                                                             ('date_of_return', 'like',context_today().strftime('%Y-%m')),
                                                                                             '&amp;',('date_of_travel','&lt;',(context_today().strftime('%Y-%m-01'))),
                                                                                                     ('date_of_return','&gt;=',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01'))
                                                                                    ]"/>
                    <separator/>
                    <filter string="January" name="january_filter" domain="[('date_of_return', 'like', '-01-%')]"/>
                    <filter string="February" name="february_filter" domain="[('date_of_return', 'like', '-02-%')]"/>
                    <filter string="March" domain="[('date_of_return', 'like', '-03-%')]" name="march_filter"/>
                    <filter string="April" domain="[('date_of_return', 'like', '-04-%')]" name="april_filter"/>
                    <filter string="May" domain="[('date_of_return', 'like', '-05-%')]" name="may_filter"/>
                    <filter string="June" domain="[('date_of_return', 'like', '-06-%')]" name="june_filter"/>
                    <filter string="July" domain="[('date_of_return', 'like', '-07-%')]" name="july_filter"/>
                    <filter string="August" domain="[('date_of_return', 'like', '-08-%')]" name="august_filter"/>
                    <filter string="September" domain="[('date_of_return', 'like', '-09-%')]" name="september_filter"/>
                    <filter string="October" domain="[('date_of_return', 'like', '-10-%')]" name="october_filter"/>
                    <filter string="November" domain="[('date_of_return', 'like', '-11-%')]" name="november_filter"/>
                    <filter string="December" domain="[('date_of_return', 'like', '-12-%')]" name="december_filter"/>
                    <group expand="0" string="Group By">
                        <filter name="state" string="Status" context="{'group_by':'state'}"/>
                        <filter string="December" domain="[('date_of_return', 'like', '-12-%')]" name="december_filter"/>
                        <filter name="group_by_tour_type" string="Tour Type" context="{'group_by':'tour_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kw_apply_tour_reports_view_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Tour Application Report</field>
            <field name="res_model">kw_apply_tour_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_fiscalyr_filter':1}</field>
            <field name="search_view_id" ref="view_kw_apply_tour_report_search"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tour Reports found.
                </p>
            </field>
        </record>

        <!-- <menuitem id="menu_kw_apply_view_report" name="Tour Application Report" parent="kw_tour_report"
                  sequence="1" action="action_kw_apply_tour_reports_view_act_window"/> -->

    </data>
</odoo>