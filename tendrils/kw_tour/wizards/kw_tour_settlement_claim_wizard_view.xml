<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_tour_settlement_claim_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_tour_settlement_claim_wizard.form</field>
            <field name="model">kw_tour_settlement_claim_wizard</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    
                        <group string="Tour Settlement">
                            <field name="tour_id" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="tour_type_id"/>
                            <field name="project_id"/>
                            <field name="settlement_id" invisible="1"/>
                        </group>

                        <group string="Tour Detail">
                            <field name="tour_detail_ids"/>
                        </group>

                        <group string="Expenditure Detail">
                            <field name="settlement_detail_ids">
                                <tree>
                                    <field name="from_date"/>
                                    <field name="to_date"/>
                                    <field name="city_id"/>
                                    <field name="category"/>
                                    <field name="expense_id" string="Description"/>
                                    <field name="currency_id"/>
                                    <field name="amount_claiming" string="Amount"/>
                                </tree>
                            </field>
                        </group>

                        <group>
                            <table class="table table-bordered" style="width:96%">

                                <thead>
                                    <tr>
                                        <th scope="col"></th>
                                        <th scope="col">INR</th>
                                        <th scope="col">USD</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    <tr>
                                        <th scope="row">Total Expenditure</th>
                                        <td><field name="total_domestic"/></td>
                                        <td><field name="total_international"/></td>
                                    </tr>

                                    <tr>
                                        <th scope="row">Advance Amount</th>
                                        <td><field name="advance_domestic"/></td>
                                        <td><field name="advance_international"/></td>
                                    </tr>

                                    <tr>
                                        <th scope="row" class="text-danger">Amount Payable</th>
                                        <td class="text-danger"><field name="paid_domestic"/></td>
                                        <td class="text-danger"><field name="paid_international"/></td>
                                    </tr>

                                </tbody>

                            </table>
                        </group>

                        <group string="Action Details">
                            <field name="action_log_ids">
                                <tree>
                                    <field name="employee_id" string="Action Taken By"/>
                                    <field name="state" string="Action"/>
                                    <field name="date" string="Action Taken On"/>
                                    <field name="remark" string="Comment"/>
                                </tree>
                            </field>
                        </group>
                        
                </sheet>
            </form>
        </field>
    </record>

</data>
</odoo>