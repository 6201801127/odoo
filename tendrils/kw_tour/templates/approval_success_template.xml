<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="kw_tour_approval_redirect" name="Tour Approval">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="container">
                        <section class="service-request mt32">
                            <div class="container card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mx-auto">
                                            <div class="section_content text-center">
                                                <h3>
                                                    <t t-if="tour.state in ['Approved']">Tour application approved successfully!</t>
                                                    <t t-if="tour.state in ['Traveldesk Approved','Finance Approved']">Tour application granted successfully!</t>
                                                    <t t-if="tour.state == 'Rejected'">Tour application rejected successfully!</t>
                                                </h3>
                                                <br/>
                                                <a class="btn btn-secondary" style="background-color: #f7941d !important;" t-att-href="'/web#id='+str(tour.id)+'&amp;action=kw_tour.action_kw_tour_view_all_act_window&amp;model=kw_tour&amp;view_type=form'">
                                                        View Details
                                                        &amp;nbsp;
                                                    <i class="fa fa-arrow-circle-right "/>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>

        <template id="kw_tour_approval_redirect_assets" inherit_id="kw_tour.kw_tour_approval_redirect">
            <xpath expr="." position="inside">
                <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css?v=12" rel="stylesheet"/>
                <script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js?v=12"/>
            </xpath>
        </template>

    </data>
</odoo>