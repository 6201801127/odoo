<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="kw_recruitment_career_sync_log_tree" model="ir.ui.view">
            <field name="name">kw_recruitment_career_sync_log.tree</field>
            <field name="model">kw_recruitment_career_sync_log</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree create="false" delete="true" edit="false">
                    <field name="name" />
                    <field name="create_date" string="Date"/>
                    <!-- <field name="payload" /> -->
                    <field name="status"/>
                </tree>
            </field>
        </record>
        <!-- Form view for "model" -->
        <record id="kw_recruitment_career_sync_log_form" model="ir.ui.view">
            <field name="name">kw_recruitment_career_sync_log.form</field>
            <field name="model">kw_recruitment_career_sync_log</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="true" edit="false">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="create_date" string="Date"/>
                            <field name="status"/>
                            <field name="payload" style="word-break: break-word;"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Search View for Sync Log -->
        <record id="kw_career_sync_search_view" model="ir.ui.view">
            <field name="name">kw_recruitment_career_sync_log.search</field>
            <field name="model">kw_recruitment_career_sync_log</field>
            <field name="arch" type="xml">
                <search string="Sync Log">
                    <field name="status" string="Status"/>
                    <field name="payload" string="Payload"/>
                    <group expand="0" string="Group By">
                        <filter string="Sync Date" name="create_date" date="create_date"/>
                        <filter string="Sync Success" name="sync_success" domain="[('status','=','Success')]"/>
                        <filter string="Sync Failed" name="sync_failed" domain="[('status','=','Failed')]"/>
                        <filter string="Payload" name="payload"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- Main window action for "model" -->
        <record id="kw_recruitment_career_sync_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Recruitment Sync Log</field>
            <field name="res_model">kw_recruitment_career_sync_log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No record found..
                </p>
            </field>
        </record>

        <!-- Main menu for "model" -->
        <!-- <record id="kw_recruitment_sync_log" model="ir.ui.menu">
            <field name="name">Career Sync Log</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="kw_recruitment_career_sync_act_window" />
            <field name="parent_id" ref="hr_recruitment.menu_hr_recruitment_configuration" />
        </record> -->
    </data>
</odoo>
