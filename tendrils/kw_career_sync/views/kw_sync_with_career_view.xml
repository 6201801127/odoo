<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
    <record id="view_kw_sync_with_career_kanban" model="ir.ui.view">
        <field name="name">kw_sync_with_career.kanban</field>
        <field name="model">kw_sync_with_career</field>
        <field name="arch" type="xml">
            <kanban 
            class="oe_background_grey o_kanban_dashboard o_hr_recruitment_kanban"  create="false" edit="false" delete="false">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-if="record.name.raw_value == 'Job'">
                            <div class="text-center">
                                <p class="h3 mt-2 ">Job List Sync</p>
                                <p class="text-justify">Lorem Ipsum is simply dummy text of the printing 
                                and typesetting industry. Lorem Ipsum has been the 
                                industry's standard dummy text ever since the 1500s, 
                                when an unknown printer took a galley of type.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary " name="sync_job" type="object">
                                        <i class="fa fa-refresh" /> &amp;nbsp;Sync Now
                                    </button>
                                </div>
                            </div>
                        </t>
                        <t t-if="record.name.raw_value == 'Master'">
                            <div class="text-center">
                                <p class="h3 mt-2 ">Job Master Data Sync</p>
                                <p class="text-justify">Lorem Ipsum is simply dummy text of the printing 
                                and typesetting industry. Lorem Ipsum has been the 
                                industry's standard dummy text ever since the 1500s, 
                                when an unknown printer took a galley of type.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary " name="sync_master" type="object">
                                           <i class="fa fa-refresh" /> &amp;nbsp;Sync Now
                                    </button>
                                </div>
                            </div>
                        </t>
                        <t t-if="record.name.raw_value == 'Log'">
                            <div class="text-center">
                                <p class="h3 mt-2 ">Sync Log</p>
                                <p class="text-justify">Lorem Ipsum is simply dummy text of the printing 
                                and typesetting industry. Lorem Ipsum has been the 
                                industry's standard dummy text ever since the 1500s, 
                                when an unknown printer took a galley of type.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary " name="sync_log" type="object">
                                           <i class="fa fa-cog" ></i>&amp;nbsp;View Log
                                    </button>
                                </div>
                            </div>
                        </t>
                        <t t-if="record.name.raw_value == 'walkin'">
                            <div class="text-center">
                                <p class="h3 mt-2 ">Sync Walkin</p>
                                <p class="text-justify">Lorem Ipsum is simply dummy text of the printing 
                                and typesetting industry. Lorem Ipsum has been the 
                                industry's standard dummy text ever since the 1500s, 
                                when an unknown printer took a galley of type.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary " name="sync_walkin" type="object">
                                           <i class="fa fa-cog" ></i>&amp;nbsp;Sync Walkin
                                    </button>
                                </div>
                            </div>
                        </t>
                        <t t-if="record.name.raw_value == 'campus'">
                            <div class="text-center">
                                <p class="h3 mt-2 ">Sync Campus Drive</p>
                                <p class="text-justify">Lorem Ipsum is simply dummy text of the printing 
                                and typesetting industry. Lorem Ipsum has been the 
                                industry's standard dummy text ever since the 1500s, 
                                when an unknown printer took a galley of type.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary " name="sync_campus" type="object">
                                           <i class="fa fa-cog" ></i>&amp;nbsp;Sync Campus Drive
                                    </button>
                                </div>
                            </div>
                        </t>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Main window action for "model" -->
    <record id="kw_sync_with_career_act_window" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Career Website Sync</field>
        <field name="res_model">kw_sync_with_career</field>
        <field name="view_mode">kanban</field>
        <field name="view_type">form</field>
        <field name="target">current</field>
    </record>
    
    <!-- Main menu for "model" -->
    <record id="menu_kw_sync_with_career" model="ir.ui.menu" >
        <field name="name">Career Website Sync</field>
        <field name="sequence" eval="10" />
        <field name="action" ref="kw_sync_with_career_act_window" />
        <field name="parent_id" ref="hr_recruitment.menu_hr_recruitment_configuration" />
    </record>
    
    </data>
</odoo>
