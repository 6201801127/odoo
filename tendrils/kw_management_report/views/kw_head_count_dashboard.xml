<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >
<record id="kw_head_count_dashboard_pivot" model="ir.ui.view">
    <field name="name">kw_head_count_dashboard.pivot</field>
    <field name="model">hr.employee</field>
    <field name="arch" type="xml">
        <pivot string="Headcount Dashboard">
            <field name="base_branch_id" type="row" />
            <field name="department_id" type="col" />
        </pivot>
    </field>
</record>

<record id="kw_head_count_dashboard_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Headcount Dashboard</field>
    <field name="res_model">hr.employee</field>
    <field name="view_mode">pivot</field>
    <field name="domain">[('employement_type.code','!=','O')]</field>
    <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'pivot', 'view_id': ref('kw_management_report.kw_head_count_dashboard_pivot')}),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('hr.view_employee_tree')})]"/>
    <field name="search_view_id" ref="hr.view_employee_filter"/>
</record>

<menuitem id="kw_head_count_dashboard_menu"
				  name="Headcount Dashboard"
				  parent="kw_employee_info_system.employee_mis_report_menu"
				  action="kw_management_report.kw_head_count_dashboard_act_window"
                  groups="hr.group_hr_manager,kw_employee.group_hr_management,kw_employee_info_system.group_mis_user"
				  sequence="4"/>
</data>
</odoo>