<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >

        <record id="notice_period_resource_report_view_tree" model="ir.ui.view">
            <field name="name">Resources Serving Notice Period</field>
            <field name="model">notice_period_resource_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <!-- <field name="sl_no"/> -->
                    <field name="name"/>
                    <field name="grade" invisible='1'/>
                    <field name="band" invisible='1'/>
                    <field name="grade_band"/>
                    <field name="job_id"/>
                    <field name="base_branch_id"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/> 
                    <field name="emp_category"/> 
                    <field name="apply_date"/>
                    <field name="last_working_date" class="text-danger" />
                    <field name="lm_name"/> 
                    <field name="emp_ulm"/>  
                </tree>
            </field>
        </record>
        <record id="notice_period_resource_report_search" model="ir.ui.view">
            <field name="name">notice_period_resource_report_search</field>
            <field name="model">notice_period_resource_report</field>
            <field name="arch" type="xml">
                <search string="Resources Serving Notice Period">
                    <field name="name"/>
                    <field name="grade"/>
                    <field name="band"/>
                    <field name="job_id"/>
                    <field name="base_branch_id"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/> 
                    <field name="emp_category"/> 
                    <field name="apply_date"/>
                    <field name="last_working_date"/>
                    <field name="lm_name"/> 
                    <field name="emp_ulm"/> 
                    <group expand="0" string="Group By">
                        <filter name="employee" string="Employee" domain="" context="{'group_by':'name'}"/>
                        <filter name="job_id" string="Position" domain="" context="{'group_by':'job_id'}"/>
                        <filter name="date_of_joining" string="Date of Joining" domain="[]" context="{'group_by':'date_of_joining'}"/>
                        <filter name="emp_role" string="Employee Role" domain="" context="{'group_by':'emp_role'}"/>
                        <filter name="emp_category" string="Employee category" domain="" context="{'group_by':'emp_category'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id="notice_period_resource_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Resources Serving Notice Period </field>
            <field name="res_model">notice_period_resource_report</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>
        
    </data>
</odoo>
