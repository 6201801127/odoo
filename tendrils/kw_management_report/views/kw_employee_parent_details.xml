<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- kw_employee_parent_details tree view -->
        <record id="kw_employee_parent_details_view_tree" model="ir.ui.view">
            <field name="name">kw_employee_parent_details.view.tree</field>
            <field name="model">kw_employee_parent_details</field>
            <field name="arch" type="xml">
                <tree create='0' delete='0' edit='0'>
                    <!-- Add your fields here -->
                    <field name="department_id" string='Dept' />
                    <field name="name" string='Reporting Authority Name' />
                    <field name="emp_code" string='Emp Code' />
                    <field name="employee_id" invisible='1' />
                    <field name="job_id" string='Designation' />
                    <field name="grade_band" string='Grade' />
                    <field name="total_repotees" string='Total Reportees' sum='Total' />
                    <field name="direct_reporting" string='Direct Subordinates' sum='Total' />
                    <field name="indirect_reporting" string='Indirect Subordinates' sum='Total' />
                </tree>
            </field>
        </record>

        <!-- kw_employee_parent_details search view -->
        <record id="kw_employee_parent_details_view_search" model="ir.ui.view">
            <field name="name">kw_employee_parent_details.view.search</field>
            <field name="model">kw_employee_parent_details</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="job_id" />
                    <field name="grade_id" />
                </search>
            </field>
        </record>


        <record id="kw_employee_parent_details_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Reporting Details</field>
            <field name="res_model">kw_employee_parent_details</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="emp_reporting_details_menu"
            name="Employee Reporting Details"
            parent="kw_employee_info_system.employee_mis_report_menu"
            action="kw_employee_parent_details_act_window"
            groups="hr.group_hr_manager,kw_employee.group_hr_management,kw_employee_info_system.group_mis_user"
            sequence="4" />
    </data>
</odoo>