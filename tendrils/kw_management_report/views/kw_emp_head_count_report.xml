<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Tree view -->
		<record id="kw_emp_head_count_report_report__view_tree" model="ir.ui.view">
            <field name="name">kw_emp_head_count_report.tree</field>
            <field name="model">kw_emp_head_count_report</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="fiscal_year" class="text-left "/>
                    <field name="emp_count"  class="text-left font-weight-bold regular_emp"/>
                    <field name="male_count"  class="text-left "/>
					<field name="female_count"  class="text-left "/>
					<field name="ctc"  class="text-left"/>
					<field name="new_joiner"  class="text-left  font-weight-bold new_joiner"/>
                    <field name="ex_emp"  class="text-left font-weight-bold ex_emp"/>
                    <field name="check_fy" invisible='1'/>
                    <button name="action_button_update" type="object" string="Sync" icon="fa-refresh" class="btn-md btn btn-primary" attrs="{'invisible':[('check_fy','=',False)]}"/>
					<button name="action_button_view_details" type="object" string="View Details" icon="fa-table" class="btn-md oe_highlight"/>
                </tree>
            </field>
        </record>

		 <record id="kw_emp_head_count_report_action" model="ir.actions.act_window">
			<field name="name">Headcount Report (YOY)</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kw_emp_head_count_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
		</record> 

		<record id="kw_emp_head_count_details_view_tree" model="ir.ui.view">
            <field name="name">kw_emp_head_count_details.tree</field>
            <field name="model">kw_emp_head_count_details</field>
            <field name="arch" type="xml">
                <tree  create="false" import="false" decoration-danger="status == 'exemp'" decoration-success="status == 'new'" decoration-warning="status == 'jl'" default_order='red desc'>
                    <field name="location"/>
                    <field name="department_id" />
					<field name="division"/>
                    <field name="employement_type"/>
                    <field name="code"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="name"/>
                    <field name="job_id"/>
					<field name="date_of_joining"/>
                    <field name="ctc" sum='Total' class="text-left font-weight-bold font-weight-bold"/>
					<field name="gender"/>
					<field name="date_of_birth"/>
                    <field name="last_working_day"/>
					<field name="red" invisible='1'/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="get_head_count_employee_details_view">
            <field name="name">Employee Data</field>
            <field name="model">get_head_count_employee_details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="fiscal_year"
                                   options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' />
                        </group>
                        <footer>
                            <center>
                                <button name="get_employee_data" type="object" string="Get Employee's Data"
                                class="btn-primary"/>

                                <button name="remove_employee_data" type="object" string="Remove Employee's Data"
                                class="btn-danger"/>
                                
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="get_head_count_employee_details_window">
            <field name="name">Get Head Count Data </field>
            <field name="res_model">get_head_count_employee_details</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Get Employee Data" id="menu_get_employee_data_for_fy"
        parent="disable_debug_mode.menu_technical_developer"
        sequence="100"
        action="get_head_count_employee_details_window"
        groups="disable_debug_mode.group_developer"/>
	</data>
</odoo>