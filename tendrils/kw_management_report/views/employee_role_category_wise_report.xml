<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >

        <record id="employee_role_catagory_wise_report_view_tree" model="ir.ui.view">
            <field name="name">Employee Role and Category wise report</field>
            <field name="model">employee_role_catagory_wise_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false' >
		            <field name="financial_year" invisible="1"/>
                    <field name="sl_no"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="total_present" sum="Total" />
                    <field name="total_ctc" sum="Total"/>  
                </tree>
            </field>
        </record>

         <record id="employee_role_catagory_wise_report_search" model="ir.ui.view">
            <field name="name">employee_role_catagory_wise_report</field>
            <field name="model">employee_role_catagory_wise_report</field>
            <field name="arch" type="xml">
                <search string="Employee Role Wise Report">
                    <field name="financial_year"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="total_present" />
                    <separator/>
                    <filter string="Current Financial Year" name="current_financial_year" domain="[('start_date', '&lt;=', context_today().strftime('%Y-%m-%d')),
																								('end_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter name="finanacial_year" string="Financial Year" domain="" context="{'group_by':'financial_year'}"/>
                        <filter name="emp_role" string="Employee Role" domain="" context="{'group_by':'emp_role'}"/>
                        <filter name="emp_category" string="Employee category" domain="[]" context="{'group_by':'emp_category'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id="employee_role_catagory_wise_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Role and Category Wise CTC Bifurcation</field>
            <field name="res_model">employee_role_catagory_wise_report</field>
			<field name="context">{'search_default_current_financial_year':1}</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>
        <record id="mis_report_sbu_bench_resource_action" model="ir.actions.act_window">
            <field name="name">Central Bench Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_bench_resource</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

         <record id="role_download_report_wizard" model="ir.ui.view">
            <field name="name">employee_role_catagory_download</field>
            <field name="model">employee_role_catagory_download</field>
            <field name="arch" type="xml">
                <form string="Process Payroll">
                     <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>     
                        <group>
                            <field name="report_details_ids" />
                        </group>
                        
                    </sheet>
                    <footer>
                        <button name="download_role_report" string="Download Report"
                                    type="object" class="oe_highlight"
                                    icon="fa-refresh"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_download_role_report_wizard"
		            name="Download Report"
		            src_model="employee_role_catagory_wise_report"
		            res_model="employee_role_catagory_download"
		            view_type="form" view_mode="form" view_id="role_download_report_wizard"
		            key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}"
		/>
       
    </data>
</odoo>
