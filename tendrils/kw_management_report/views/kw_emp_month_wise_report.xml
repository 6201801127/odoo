<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_monthly_emp_report_filter_view_form" model="ir.ui.view">
            <field name="name">kw_monthly_emp_report_filter.view.form</field>
            <field name="model">kw_monthly_emp_report_filter</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                    <div class="d-flex jusitfy-content-center flex-column">
                        <div class="offset-2 col-8 offset-2 ">
                            <table class="mx-auto">
                                <tr>
                                    <td>
                                        <label class="o_form_label mb-2 font-weight-bold"
                                            for="company_id">Company:</label>
                                    </td>
                                    <td>
                                        <field name="company_id" required='1' options="{'no_open':True,'no_create':True,'no_edit': True}"/>
                                        
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="o_form_label mb-2 font-weight-bold"
                                            for="from_date">From:</label>
                                    </td>
                                    <td>
                                        <field name="from_date" required='1'/>
                                        
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="o_form_label mb-2 font-weight-bold"
                                            for="to_date">To:</label>
                                    </td>
                                    <td>
                                        <field name="to_date" required='1'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <footer class="d-flex justify-content-center">
                        <button string='Submit' name="btn_fetch_employee"
                            type="object" class="btn font-weight-bold text-white"
                            style="background-color: #108fbb;" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="kw_emp_month_wise_report_tree_view" model="ir.ui.view">
            <field name="name">kw_emp_month_wise_report.view.tree</field>
            <field name="model">kw_emp_month_wise_report</field>
            <field name="arch" type="xml">
                <tree create='0' delete='0' edit='0'>
                    <field name="emp_code" string='Code'/>
                    <field name="name" />
                    <field name="job_branch_id"/>
                    <field name="job_id" />
                    <field name="department_id" />
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                    <field name="sbu_master_id"/>
                    <field name="budget_type"/>
                    <field name="present_add_state"/>
                    <field name="permanent_add_state"/>
                    <field name="emp_religion"/>
                    <field name="blood_group"/>
                    <field name="emp_grade" />
                    <field name="emp_band"/>
                    <field name="total_experience_years" invisible='1'/>
                    <field name="total_experience_months" invisible='1'/>
                    <field name="previous_company_experience_display_abbr"/>
                    <field name="date_of_joining" />
                    <field name="employement_type" />
                    <field name="num_absent_days" string='Absent Days'/>
                    <field name="last_working_day" />
                    <field name="birthday" />
                    <field name="gender" />
                    <field name="age" invisible='1'/>
                    <field name="age_group"/>
                    <field name="emp_id" invisible='1'/>
                    <field name="attendance_month" invisible='1'/>
                    <field name="attendance_year" invisible='1'/>
                    <field name="emp_sts"/>
                </tree>
            </field>
        </record>

        <record id="kw_monthly_emp_report_filter_action" model="ir.actions.act_window">
            <field name="name">Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_monthly_emp_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>