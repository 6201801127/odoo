<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="kw_employee_covid_data_web_template" name="Employee Covid Data">
            <t t-call="website.layout">
                <div class="container-fluid pt-0 px-5">

                    <div class="card m-3 p-3">
                        <div class="card-header py-4">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-6">
                                    <img src="/kwantify_theme/static/img/csmlogobtb.png" />
                                    <i class="fa fa-long-arrow-right fa-2x mx-3"/>
                                    <span class="h3">
                                        Covid Survey Form
                                    </span>
                                </div>
                                <!-- <div class="col-6 text-right">
                                    <span class="h3 ">
                                        CSM Technologies Pvt. Ltd.
                                    </span>
                                </div> -->
                            </div>
                        </div>
                        <!-- body -->
                        <form t-att-action="'/employee-covid-data-submit/'"
                            method="post"
                            class=""
                            enctype="multipart/form-data"
                            id="covid_data_form">
                            <div class="mb-3 mt-4 ml-2 row" >
                                <label for="select_dose" class="form-label col-sm-2">Dose</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="dose" id="inlineRadio1" value="first_dose" />
                                    <label class="form-check-label" for="inlineRadio1">1st Dose</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="dose" id="inlineRadio2" value="second_dose" checked='true' />
                                    <label class="form-check-label" for="inlineRadio2">2nd Dose</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="dose" id="inlineRadio3" value="no_dose_taken" />
                                    <label class="form-check-label" for="inlineRadio3">No Dose Taken</label>
                                </div>
                            </div>
                            <div class="mb-3 ml-2 row" id='date_field' >
                                <label class="col-sm-2" for="date">2nd Dose Date</label>
                                <input type="date" class="form-control w-50 col-sm-6" id="date" name='date' />
                                <p class='text-danger col-sm-4' style='display:none' id='date_error'>This Field is Required!</p>
                            </div>
                            <div class="mb-3 ml-2 row" id='due_date_field' style='display:none'>
                                <label class="col-sm-2" for="date">2nd Dose Due Date</label>
                                <input type="date" class="form-control w-50 col-sm-6" id="due_date" name='due_date' />
                                <p class='text-danger col-sm-4' style='display:none' id='due_date_error'>This Field is Required!</p>
                            </div>
                            <div class="mb-3 ml-2 row" id='dose1_field' style='display:none'>
                                <label class="col-sm-2" for="document1">Dose 1 Document</label>
                                <input type="file" accept="application/pdf" class="form-control w-50 col-sm-6" id="document1" name='dose_1_document' />
                                <p class='text-danger col-sm-4' style='display:none' id='doc1_error'></p>
                            </div>
                            <div class="mb-3 ml-2 row" id='dose2_field' >
                                <label class="col-sm-2" for="document2">Dose 2 Document</label>
                                <input type="file" accept="application/pdf" class="form-control w-50 col-sm-6" id="document2" name='dose_2_document' />
                                <p class='text-danger col-sm-4' style='display:none' id='doc2_error'></p>
                            </div>
                            <div class="mb-3 ml-2 row" id='remark_field' style='display:none'>
                                <label class="col-sm-2" for="remark">Remark</label>
                                <input type="text" class="form-control w-50 col-sm-6" id="remark" name='remark' />
                                <p class='text-danger col-sm-4' style='display:none' id='remark_error'>This Field is Required!</p>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm ml-4">Submit</button>
                        </form>
                       
                    </div>
                
                </div>

            </t>
    </template>

    <!-- Thankyou Template -->
    <template id="kw_employee_covid_data_submission_template" name="Employee Covid Data submission template">
            <t t-call="website.layout">
                <div class="wrap">
					<div class="container">
						<section class="service-request mt32">
							<div class="container card">
								<div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section__content text-center">
												<div class="swal2-icon swal2-success swal2-animate-success-icon"
												     style="display: flex;" data-oe-model="ir.ui.view" data-oe-id="1641"
												     data-oe-field="arch"
												     data-oe-xpath="/t[1]/t[1]/div[1]/div[1]/div[1]/div[1]">
													<span class="swal2-success-line-tip"/>
													<span class="swal2-success-line-long"/>
													<div class="swal2-success-ring"/>
												</div>
												<h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
													Thank you!
													<br/>
													Your Covid Details has been submitted successfully.
												</h2>
												<a class="btn btn-primary badge"
												   style="background-color: #f7941d !important;" t-attf-href="/web">
													<i class="fa fa-arrow-circle-left "/>
													&amp;nbsp;
													Go To Dashboard
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
            </t>
        </template>

        <!-- css and javascript -->
        <template id="kw_epf_form_style" inherit_id="kw_employee_covid_data.kw_employee_covid_data_web_template">
            <xpath expr="." position="inside">
                <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
                <script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js"></script>
                <script type="text/javascript" src="/kw_epf_form/static/src/js/epf.js"/>
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js" />
            </xpath>
        </template>

         <template id="kw_assessment_feedback_thanks_page_assets" inherit_id="kw_employee_covid_data.kw_employee_covid_data_submission_template">
            <xpath expr="." position="inside">
                <link href="/kw_assessment_feedback/static/src/css/front_style.css" rel="stylesheet"/>
                <link href="/kw_assessment_feedback/static/src/css/success.css" rel="stylesheet"/>
                <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css?v=12" rel="stylesheet"/>
                <script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js?v=12"/>
            </xpath>
        </template>

</odoo>
