<?xml version="1.0"?>
<odoo>
    <data>
        <record id="kw_meeting_zoom_attendance_wizard_form" model="ir.ui.view">
            <field name="name">Meeting Zoom Attendance Wizard Form</field>
            <field name="model">kw_meeting_zoom_wizard</field>
            <field name="arch" type="xml">
                <form string="Meeting Zoom Attendance Wizard Form" create='false' edit="false">

                     <header>
                        <button name="btn_submit" type="object" string="Submit" class="oe_highlight" confirm="Are you sure to submit the attendance?"/>"
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="meeting_events_id" style="pointer-events:none;" />
                                <label for="kw_start_meeting_date" string="Date &amp; Time" />
                                    <div class="address_format">
                                        <field name="kw_start_meeting_date" style="width: 50%; pointer-events:none;" autocomplete="off"/>
                                        <field name="kw_start_meeting_time" style="width: 50%; pointer-events:none;"/>
                                    </div>
                                <field name="duration" style="pointer-events:none;"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Attendees" string="Attendees">
                                <field name="attendee_ids" >
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                                        <field name="attendance_status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>      
    </data>
</odoo>         