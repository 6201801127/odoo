<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
    
         <record id="kw_mom_mail_wizard_wizard_form" model="ir.ui.view">
            <field name="name">MoM Mail Wizard Form </field>
            <field name="model">mom_mail_wizard</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                    <div class="row">
                        <div class="col-sm-10 mx-auto" >
                            <div class="row">
                                <div class="col-sm-9"> 
                                    <field name="meeting_id" options="{'no_create': True, 'no_create_edit':True}" style="overflow-y: hidden;width: 400px;" invisible='1'/> 
                                    <field name="meeting_topic" style="font-size: 20px;"/>
                                </div>
                            </div>
                           
                            <div class="row">
                                <div class="col-sm-9">
                                    <field name="draft_mom_content" style="overflow-y: visible;height: 30px;resize: none;width: 800px; height :250px" readonly='1'/>
                                </div>
                            </div>
                            <div class="text-center">
                                <footer>
                                 <button name="send_mom_mail" type="object" class="btn-primary">Share Draft MoM</button>
                                 <button string="Close" class="btn-danger" special="cancel"/>
                                 </footer>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>