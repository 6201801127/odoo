<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_zoom_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.zoom</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Meeting Schedule" string="Meeting Schedule" data-key="kw_meeting_zoom_integration"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>Zoom Configuration Parameters</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Zoom configuration API key" id="zoom_configuration_api_key">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">API Key</span>
                                <div class="text-muted">Set the API Key for Zoom configuration</div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="api_key" string="API Key" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="api_key" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                       <div class="col-12 col-lg-12 o_setting_box" title="Zoom configuration API Secret" id="zoom_configuration_api_secret">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">API Secret</span>
                                <div class="text-muted">Set the API secret for Zoom configuration</div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="api_secret" string="API Secret" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="api_secret" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box" title="Zoom configuration webhook Token ">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Webhook Token</span>
                                <div class="text-muted">Set the Webhook Token for Zoom configuration</div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="webhook_token" string="Webhook Token" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="webhook_token" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="kw_zoom_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_meeting_zoom_integration'}</field>
    </record>
</odoo>
