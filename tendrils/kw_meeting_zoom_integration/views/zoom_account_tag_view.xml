<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tag_zoom_account_view" model="ir.ui.view">
            <field name="name">zoom.account.tag.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Add Zoom Email">
                    <sheet>
                        <group>
                             <field name="zoom_email"/>
                        </group>
                    </sheet>
                    <footer>
                        <button class="btn btn-primary o_list_button_add" name="write" type="object" string="Submit"/>
                        <!-- <button name="cancel" string="Close" special="cancel" class="btn btn-secondary"/> -->
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>