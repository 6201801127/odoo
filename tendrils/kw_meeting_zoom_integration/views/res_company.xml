<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_zoom_config" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Zoom Meeting Configuration">
                        <button type="object"
                                name="connect_authorize"
                                string="Authenticate"
                                icon="fa-plug"
                                class="btn btn-primary btn-md" invisible="1"/>
                        <button type="object"
                                class="btn btn-primary btn-md"
                                name="refresh_token_action"
                                string="Refresh Token"
                                icon="fa-refresh"
                                style="margin-left: 20px;" invisible="1" />
                        <button type="object"
                                class="btn btn-primary btn-md"
                                name="create_meeting_action"
                                string="Create Meeting"
                                icon="fa-refresh"
                                style="margin-left: 20px;" invisible="1"/>
                        <button type="object"
                                class="btn btn-primary btn-md"
                                name="user_detail_action"
                                string="Get User Details"
                                icon="fa-refresh"
                                style="margin-left: 20px;" invisible="1"/>
                        <button type="object"
                                class="btn btn-primary btn-md"
                                name="create_user"
                                string="Create User"
                                icon="fa-refresh"
                                style="margin-left: 20px;" invisible="1"/>

                        <group name="zoom_credentials" string="Credentials">
                                <field name="jwt_api_key" />
                                <field name="jwt_api_secret" />
                                <field name="event_token" />

                                <field name="zoom_id">
                                    <tree>
                                        <field name="zoom_id"/>
                                        <field name="first_name"/>
                                        <field name="last_name"/>
                                        <field name="type_id"/>
                                        <field name="role_name"/>
                                        <field name="timezone"/>
                                        <field name="status"/>
                                        <field name="mapped_user"/>
                                    </tree>
                                </field>
                                <field name="jwt_user_id" invisible="1"/>

                                <field name="client_id" invisible="1"/>
                                <field name="client_secret_key" invisible="1"/>
                                <field name="redirect_url" invisible="1"/>
                                <field name="auth_url" invisible="1"/>
                                <field name="auth_token_url" invisible="1"/>
                                <field name="base_url" groups="base.group_no_one" invisible="1"/>

                                <field name="auth_code" invisible="1"/>
                                <field name="access_token" style="word-break: break-all;" invisible="1"/>
                                <field name="refresh_token" style="word-break: break-all;" invisible="1"/>
                                <field name="expires_in"  groups="base.group_no_one" invisible="1"/>
                                <field name="token_type"  groups="base.group_no_one" invisible="1"/>
                                <field name="scope"  groups="base.group_no_one" invisible="1"/>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>