<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <record id="view_groups_form_inh" model="ir.ui.view">
            <field name="name">res.groups.form</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[1]/field[@name='users']" position="replace">
                    <field name="users" context="{'search_default_no_share':1}">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
        <!-- Add you code here -->
        <record model="ir.ui.view" id="kw_res_users_tree">
            <field name="name">kw_res_user.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id"/>
                    <field name="dept_id"/>
                    <field name="division_id"/>
                    <field name="section_id"/>
                    <field name="practise_id"/>
                    <field name="zoom_id" string="Zoom User" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_res_users_form">
            <field name="name">kw_res_users.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="zoom_id" string="Zoom User"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      
        <record model="ir.actions.act_window" id="kw_res_users_action">
            <field name="name">Users</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_res_users_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_res_users_form')})]"/>
        </record>


        <record id="kw_meeting_view_access_groups_form_zoom" model="ir.ui.view">
            <field name="name">kw_meeting_access_groups.form</field>
            <field name="model">kw_meeting_user_groups</field>
            <field name="inherit_id" ref="kw_meeting_schedule.kw_meeting_view_access_groups_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//sheet/notebook/page[@name='users']/field/tree/field[@name='name']" position="after">
                     <field name="zoom_acc_id" string="Zoom ID"/>
                 </xpath>
            </field>
        </record>
    </data>
</odoo>