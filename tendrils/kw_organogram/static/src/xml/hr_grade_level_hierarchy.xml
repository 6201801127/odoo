<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="hr_grade_level_hierarchy_report">
		<div class="grade-wrapper">
			<div class="pyramid mx-auto d-flex flex-column">
				<div class="zone">Heads</div>
				<div class="zone">Managers</div>
				<div class="zone">Consultants</div>
				<div class="zone">Trapezoid</div>
				<t t-foreach="widget.grade_level_data.values.children" t-as="grade">
					<t t-esc="grade.name" />
				</t>
			</div><!-- Closes .pyramid -->
		</div>
	</t>
</templates>