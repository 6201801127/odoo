
<odoo>
    <data> 
        <record id="visitor_management_email_template" model="mail.template">
            <field name="name">Visitor's Mail</field>
            <field name="subject">VMS | A vistor has come to visit you</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="model_visitor_wizard"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear ${ctx['email_to_name']},</span>
                                    </h5>
                                    <p>${ctx['v_name']} has come to meet you. </p>  
                                    <p style="margin-bottom: 0;">Mobile: ${ctx['v_number']}.</p>    
                                    <p style="margin: 0;">Purpose: ${ctx['v_purpose']}.</p>    
                                    <p> Please contact with him/her.</p>  
                                    <p style="margin: 0;"> Thanks,</p>  
                                    <p style="margin: 0;">Kwantify Team</p>  
                                </div>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                    </h5>
                                       
                                </div>
                                <div style="margin-left: 1.2rem; margin-top: 1.5rem;">
                                    <p style="font-weight: 600;">Note:</p>
                                    <hr style="border: none; border-top: 1px solid #ccc; margin: 0.5rem 0;">
                                    <p style="color: #676767; font-size: 14px;">
                                        This is a system-generated reminder mail. Kindly do not reply to this mail. Contact the HR department in case of any queries.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>