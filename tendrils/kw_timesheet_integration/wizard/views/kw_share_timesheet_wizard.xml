<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_form_kw_share_timesheet_wizard" model="ir.ui.view">
            <field name="name">kw_share_timesheet_wizard form</field>
            <field name="model">kw_share_timesheet_wizard</field>
            <field name="arch" type="xml">
                <form string="Process Payroll">
                     <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>     
                        <group>
                            <group>
                                <field name="timesheet_year" required="1"/>
                                <field name="timesheet_month" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="share_timesheet_data_with_payroll" string="Share with Payroll"
                                    type="object" class="btn btn-warning"
                                    icon="fa-share-alt"/>
                        </footer>
                        
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_kw_share_timesheet_wizard" model="ir.actions.act_window">
            <field name="name">Share Timesheet Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_share_timesheet_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_kw_share_timesheet_wizard"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_share_timesheet_wizard"
                  name="Share Timesheet Data"
                  action="action_kw_share_timesheet_wizard"
                  parent="hr_timesheet.hr_timesheet_menu_configuration"
                  sequence="99" groups="hr_timesheet.group_timesheet_manager"/>
       
    </data>
</odoo>