<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="kw_payroll_el_deduction_wizard_form" model="ir.ui.view">
            <field name="name">kw_payroll_el_deduction form</field>
            <field name="model">el_deduction</field>
            <field name="arch" type="xml">
                <form string="Attendance Details">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="payroll_details_ids" readonly='1'>
                                <tree>
                                    <field name="attendance_month_name" string="Month"/>
                                    <field name="employee_id" string="Employee" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                    <field name="department_id" readonly='1'/>
                                    <field name="employee_designation"/>
                                    <field name="timesheet_el_deduct_in_day"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="approve_el_deduction_btn" string="Deduct EL" type="object" class=" btn btn-success"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
         <act_window id="el_deduction_action"
		            name="Deduct EL"
		            src_model="kw_payroll_monthly_attendance_report"
		            res_model="el_deduction"
		            view_type="form" view_mode="form" view_id="kw_payroll_el_deduction_wizard_form"
		            key2="client_action_multi" target="new"
                    context="{'selected_active_ids':active_ids}"
		/>
    </data>
</odoo>