<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         
        <record model="ir.ui.view" id="view_kw_sbu_plan_report_tree">
            <field name="name">kw_sbu_plan_report_tree</field>
            <field name="model">kw_sbu_plan_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="year" string='Month/Year'/>
                    <field name="sbu_developer_count" sum='Total'/>
                    <field name="sbu_tl_count" sum='Total'/>
                    <field name="sbu_ctc" sum='Total'/>
                    <field name="bench_developer_count" sum='Total'/>
                    <field name="bench_tl_count" sum='Total'/>
                    <field name="bench_ctc" sum='Total'/>
                    <field name="date_to" invisible='1'/>
                    <field name="salary_date" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="kw_sbu_plan_report_search" model="ir.ui.view">
            <field name="name">kw_sbu_plan_report.view.search</field>
            <field name="model">kw_sbu_plan_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="salary_date" string='Month'/>
                    <field name="date_to"/>
                        <group expand="0" string="Group By">
                        <filter name="date_to" string="Date" domain="" context="{'group_by':'date_to'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="timesheet_sbu_plan_report_action" model="ir.actions.act_window">
            <field name="name">SBU Plan Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_sbu_plan_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'delete':0,'edit':0,'create':0}</field>
            <field name="domain">[('salary_date','!=',False),('date_to','!=',False),('year','!=',False)]</field>
        </record>

        <menuitem id="timesheet_kw_sbu_plan_menu" name="SBU Plan Report" parent="hr_timesheet.menu_timesheets_reports" sequence="1" action="timesheet_sbu_plan_report_action"   groups="kw_timesheet_integration.group_ctc_sbu_reviewer,disable_debug_mode.group_developer"/>
    </data>
</odoo>