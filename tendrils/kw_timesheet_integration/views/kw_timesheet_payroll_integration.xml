<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_form_kw_payroll_share_wizard" model="ir.ui.view">
            <field name="name">kw_payroll_share_wizard form</field>
            <field name="model">kw_payroll_integration_wizard</field>
            <field name="arch" type="xml">
                <form string="Process Payroll">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="payroll_report_ids" readonly='1'/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="share_selected_timesheet_info_with_payroll_module" string="Share with Payroll"
                                type="object" class=" btn btn-warning"
                                icon="fa-share-alt"/>

                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_timesheet_info_share_payroll_module_wizard"
                    name="Share with Payroll"
                    src_model="kw_timesheet_payroll_report"
                    res_model="kw_payroll_integration_wizard"
                    view_type="form" view_mode="form" view_id="view_form_kw_payroll_share_wizard"
                    key2="client_action_multi" target="new"
        />

        <!--        El Deduct Wizard View-->

        <record id="view_form_kw_payroll_el_deduct_wizard" model="ir.ui.view">
            <field name="name">view_form_kw_payroll_el_deduct_wizard</field>
            <field name="model">kw_payroll_deduct_el_wizard</field>
            <field name="arch" type="xml">
                <form string="Process Payroll">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="payroll_report_ids" readonly='1'/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="deduct_el_timesheet_info_with_payroll" string="Deduct EL"
                                type="object" class=" btn btn-warning"
                                icon="fa-share-alt"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_timesheet_deduct_el_module_wizard"
                    name="Deduct EL"
                    src_model="kw_timesheet_payroll_report"
                    res_model="kw_payroll_deduct_el_wizard"
                    view_type="form" view_mode="form" view_id="view_form_kw_payroll_el_deduct_wizard"
                    key2="client_action_multi" target="new"
        />

    </data>
</odoo>