<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_adv_relaxation_wizard_form" model="ir.ui.view">
            <field name="name">Relaxation period</field>
            <field name="model">kw_advance_relaxation_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>
                        <group>
                            <group>
                                <field name="salary_adv_id" invisible="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="relaxation_period" required='1' style="height: 30px;resize: none;" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="description" required='1' style="height: 30px;resize: none;"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="get_relaxation" type="object" class="btn btn-success btn-lg">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="kw_adv_relaxation_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Relaxation period</field>
            <field name="res_model">kw_advance_relaxation_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="src_model">kw_advance_apply_salary_advance</field>
            <field name="view_id" ref="kw_adv_relaxation_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>