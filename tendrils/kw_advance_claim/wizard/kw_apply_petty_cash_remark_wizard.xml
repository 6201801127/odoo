        <!-- Salary Advance Cancel Remark Form -->
        <record id="kw_adv_petty_cash_cancel_remark_wizard_form_view" model="ir.ui.view">
            <field name="model">kw_advance_petty_cash_cancel_remark_wizard</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){    
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="remark"/>
                        </p>
                        <button type="object" name="cancel_petty_cash" class="btn-success mr-2" style="float:left;">Submit</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
                </form>
            </field>
        </record>
