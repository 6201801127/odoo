<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- salary advacne report -->
    <record id="salary_advance_report_wizard_view" model="ir.ui.view">
        <field name="name">Salary Advance Report</field>
        <field name="model">kw_advance_salary_advance_report_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="applied_by" widget="radio" options="{'horizontal': true}"/>
                        <field name="month" attrs="{'invisible': [('applied_by', 'in', ['dt','employee','all'])],'required':[('applied_by', '=', 'my')]}"/>
                        <field name="year" attrs="{'invisible': [('applied_by', 'in', ['dt','employee','all'])],'required':[('applied_by', '=', 'my')]}"/>

                        <field name="date_from" attrs="{'invisible': [('applied_by', 'in', ['my','employee','all'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />
                        <field name="date_to" attrs="{'invisible': [('applied_by', 'in', ['my','employee','all'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />

                        <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('applied_by', 'in', ['my','dt','all'])],'required':[('applied_by', '=', 'employee')]}" options="{'no_open': True,'no_create':True,'no_edit':True}" groups="kw_employee.group_hr_ra,kw_advance_claim.group_kw_advance_claim_account,kw_advance_claim.group_kw_advance_claim_admin"/>
                    </group>
                </group>
                <footer>
                    <button name="search_salary_advance_report" string="View Reports" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="salary_advance_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Salary Advance Report</field>
        <field name="res_model">kw_advance_salary_advance_report_wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="salary_advance_report_wizard_view"/>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records to show...
            </p>
        </field>
    </record>


