<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_apply_salary_advance_wizard_form" model="ir.ui.view">
            <field name="name">Salary advance Forward Form</field>
            <field name="model">kw_apply_salary_advance_wizard</field>
            <field name="arch" type="xml">
                <form string="Forward To">
                    <sheet>
                        <script>
                            $(document).ready(function(){
                            $(".modal-title").show();
                            });
                        </script>
                        <group>
                            <field name="salary_advance_record_id" invisible="1"/>
                            <field name="forwardto_id" string="Select Employee" options="{'no_open': True,'no_create':True,'no_edit':True}" style="overflow-y: hidden;width: 700px;"/>
                            <field name="remark" style="overflow-y: hidden;height: 30px;resize: none;width: 700px;" string="Remark"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="sal_adv_fwd_take_action_btn" type="object" class="btn btn-success">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
        

    </data>
</odoo>