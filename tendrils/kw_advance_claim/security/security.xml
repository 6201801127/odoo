        </record> -->

        <!-- Salary Advance Rules -->
        <record id = "user_advance_salary_rule" model = "ir.rule">
            <field name = "name">User Advance  Rule</field>
            <field name = "model_id" ref = "model_kw_advance_apply_salary_advance" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_user'))]" />
            <field name = "domain_force"> [('employee_id','=',user.employee_ids.id)] </field>
        </record>
        <record id = "reporting_authority_advance_salary_rule" model = "ir.rule">
            <field name = "name">RA Advance  Rule</field>
            <field name = "model_id" ref = "model_kw_advance_apply_salary_advance" />
            <field name = "groups" eval = "[(4, ref ('kw_employee.group_hr_ra'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="False" />
            <field name="perm_unlink" eval="False" />
            <field name = "domain_force"> [('action_to_be_taken_by.user_id','=',user.id)] </field>
        </record>
        <record id = "account_advance_salary_rule" model = "ir.rule">
            <field name = "name">Account Advance  Rule</field>
            <field name = "model_id" ref = "model_kw_advance_apply_salary_advance" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_account'))]" />
            <field name = "domain_force"> [(1, '=', 1)] </field>
        </record>

        <record id = "manager_advance_salary_rule" model = "ir.rule">
            <field name = "name">Manager Advance  rule</field>
            <field name = "model_id" ref = "model_kw_advance_apply_salary_advance" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_admin'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

