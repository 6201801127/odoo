<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    
		<record model="ir.module.category" id="module_category_kw_advance_claim">
			<field name="name">Advance Claim</field>
	        <field name="description">User access level for this module</field>
	        <field name="sequence">99</field>
        </record>

        <record id="group_kw_advance_claim_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_kw_advance_claim"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_kw_advance_claim_admin" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_kw_advance_claim"/>
            <!-- <field name="implied_ids" eval="[(4, ref('group_kw_advance_claim_user'))]"/> -->
        </record>

        <record id="group_kw_advance_claim_account" model="res.groups">
            <field name="name">Account</field>
            <field name="category_id" ref="module_category_kw_advance_claim"/>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
        </record>

        <!-- <record id="group_kw_advance_claim_ra" model="res.groups">
            <field name="name">RA</field>
