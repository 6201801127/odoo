        <record id="kw_petty_cash_apply_mail_template" model="mail.template">
            <field name="name">kw Petty cash Apply e-mail template</field>
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="subject">Petty Cash Request | ${object.user_emp_id.name}(${object.user_emp_id.emp_code}) | ${ctx['status']}</field>
