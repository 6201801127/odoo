            <field name="body_html">
                <![CDATA[
                           <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                   
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Hello</span>
                                        ${object.user_emp_id.parent_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        The Petty cash request has been applied by ${object.user_emp_id.name}(${object.user_emp_id.emp_code}) ,${object.user_emp_id.job_id.name}, ${object.user_emp_id.department_id.name} Department.
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" colspan="2">
                                            <strong><u>Petty Cash Details</u></strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            Loan Amount:
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.currency_id.symbol}${'{:,.2f}'.format(object.advance_amt)}
                                        </td>
                                    </tr>
                                   
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            Required Date:
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                          ${format_tz(object.req_date, tz='UTC', format='%d-%b-%Y')}
                                        </td>
