<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_amount_eligibility_conf_tree">
            <field name="name">kw_amount_eligibility_conf.tree</field>
            <field name="model">kw_advance_amount_eligibility_conf</field>
            <field name="arch" type="xml">
                <tree string="Amount Eligibility Configuration">
                    <field name="location_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="group_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="grade_ids" widget="many2many_tags" />
                    <field name="band_ids" widget="many2many_tags"/>
                    <field name="max_elig_amount" required="1"/>
                    <field name="interest" required="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_amount_eligibility_conf_form">
            <field name="name">kw_amount_eligibility_conf.form</field>
            <field name="model">kw_advance_amount_eligibility_conf</field>
            <field name="arch" type="xml">
                <form string="Amount Eligibility Configuration">
                    <sheet>
                        <group>
                            <group>
                                <field name="group_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="select_branch" widget="radio" options="{'horizontal': true}"/>
                                <field name="location_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('select_branch','=', 'all')]}"/>
                                <field name="grade_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
                                <field name="band_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                 <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="max_elig_amount" required="1"/>
                                <field name="interest" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_amount_eligibility_conf_action">
            <field name="name">Advance Amount Eligibility Configuration</field>
            <field name="res_model">kw_advance_amount_eligibility_conf</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>