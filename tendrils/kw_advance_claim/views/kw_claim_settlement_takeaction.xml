<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_adv_claim_settlement_takeaction_tree">
            <field name="name">kw_adv_claim_settlement.tree</field>
            <field name="model">kw_advance_claim_settlement</field>
            <field name="arch" type="xml">
                <tree delete='false' create='false'>
                    <field name="name"/>
                    <field name="petty_cash_id"/>
                    <field name="empl_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="applied_date" widget="date"/>
                    <field name="currency_id"/>
                    <field name="net_total" string="Claim Amt." widget="monetary"/>
                    <field name="forwarded_by"/>
                    <field name="pending_status" invisible='1'/>
                    <field name="pending_at_status"/>
                    <field name="state"/>
                    <button name="claim_take_action_button" string="Take Action" type="object" attrs="{'invisible': [('state','in',['cancel','reject','grant'])]}" help="message" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_adv_claim_settlement_takeaction_form">
            <field name="name">kw_adv_claim_settlement.form</field>
            <field name="model">kw_advance_claim_settlement</field>
            <field name="arch" type="xml">
                <form delete='false' create='false' edit='false'>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,forward,approve,forward_acc,cancel,hold,grant,reject"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                 <field name="advance_taken" invisible="1"/>
                                <field name="petty_cash_id" invisible='0' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="show_apply_btn" invisible='1'/>
                                <field name="name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="empl_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="division"  force_save="1" attrs="{'invisible': [('division','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="section"  force_save="1" attrs="{'invisible': [('section','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="practise"  force_save="1" attrs="{'invisible': [('practise','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="applied_date" widget="date" readonly="1"/>
                                <!-- <field name="eligible_amount"/> -->
                                <field name="currency_id" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1"/>
                                <field name="advance_amt" widget="monetary" readonly="1"/>
                            </group>
                            <group>
                                <field name="petty_cash_type" attrs="{'invisible': [('petty_cash_type','=', False)]}" invisible="1"/>
                                <field name="payment_date" string="Disbursed Date" attrs="{'invisible': [('state','not in', ['release'])]}" readonly="1"/>
                                <field name="hide_btn_cancel" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="show_accounts_button" invisible='1'/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Claim_bill" string="Claim Details">

                                <field name="claim_bill_line_ids" force_save="1">
                                    <tree editable="bottom">
                                        <field name="sr_no" invisible="1"/>
                                        <field name="date" widget="date"/>
                                        <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="claim_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="description"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="upload_bill" filename="file_name" widget="FieldBinary"/>
                                        <field name="file_name" invisible="1"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_total" readonly="1" widget="monetary" attrs="{'invisible':[('advance_taken','=', 'no')]}"/>
                            <field name="expenses" readonly="1" widget="monetary" attrs="{'invisible':[('advance_taken','=', 'no')]}"/>
                            <field name="net_total" class="oe_subtotal_footer_separator" readonly="1" widget="monetary" string="Payble/Receivable" attrs="{'invisible':[('advance_taken','=', 'no')]}"/>
                            <field name="total_expenditure" class="oe_subtotal_footer_separator" readonly="1" widget="monetary" string="Total Expenditure" attrs="{'invisible':[('advance_taken','=', 'yes')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_adv_claim_settlement_takeaction">
            <field name="name">Petty Cash Settlement</field>
            <field name="res_model">kw_advance_claim_settlement</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('action_to_be_taken_by.user_id','=',uid),('state','in',['applied','hold','forward'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_adv_claim_settlement_takeaction_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
						No records to show...
                </p>
            </field>
        </record>
    </data>
</odoo>