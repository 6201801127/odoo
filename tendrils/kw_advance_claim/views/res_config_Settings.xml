<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_advance_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.kw_advance_claim</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="70"/> -->
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Advance &amp; Claim Settings" string="Advance &amp; Claim Settings" data-key="kw_advance_claim">
                <h2>Advance &amp; Claim Configuration Parameters</h2>
                    <div class="row mt16 o_settings_container">
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <!-- <div class="row">
                                    <label string="Approval Notification" for="grant_ids" class="col-lg-5"/>
                                    <field name="grant_ids" widget="many2many_tags" options="{'no_create_edit': True, 'no_open': True}"/>
                                </div>
                                <div class="text-muted">
                                    Approval mail Notification will be sent to them.
                                </div> -->
                                <div class="row">
                                    <label string="CC Notification" for="notification_cc_ids" class="col-lg-5"/>
                                    <field name="notification_cc_ids" widget="many2many_tags" options="{'no_create': True,'no_edit': True, 'no_open': True}"/>
                                </div>
                                <div class="text-muted">
                                    CC Notification mail will be sent to them.
                                </div>
                                <div class="row">
                                    <label string="Individual HR Email" for="individual_hr_email" class="col-lg-5"/>
                                    <field name="individual_hr_email"/>
                                </div>
                                <div class="text-muted">
                                    Add individaul email to send notification.
                                </div>
                                <div class="row">
                                    <label string="Enable Advance sync API" for="advance_api" class="col-lg-5"/>
                                    <field name="advance_api"/>
                                </div>
                                <div class="text-muted">
                                    Enable Advance and claim Tendrils Sync API.
                                </div>
                                <div class="row">
                                    <label string="Set Eligibility Criteria In Months" for="advance_eligibility_criteria" class="col-lg-5"/>
                                    <field name="advance_eligibility_criteria"/>
                                </div>
                                <div class="text-muted">
                                    Set Eligibility Criteria For employee to Apply salary advance.
                                </div>
                            </div>
                        </div>
                    </div>
                       
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="kw_advance_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
