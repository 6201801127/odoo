<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_grievance_view" >
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout" t-lang="hi_IN">
                        <br/><br/><br/>
                        <br/><br/><br/>
                        <br/><br/><br/>
                <div class="col-xs-12">
                    <table class="table table-sm" style="width:100%;border:1px solid #e0e0e0;border-collapse: collapse; margin-bottom: 1px;">
                        <tr>
                            <td scope="col" class="text-uppercase text-center" style="font-weight: bold; width: 100%; background-color: #e0e0e0; padding: 0px 2px"> Petty Cash Settlement - <span t-esc="o.petty_cash_id.name" /></td>
                        </tr>
                    </table>
                    <table class="table table-sm" style="border:1px solid #e0e0e0;border-collapse: collapse;margin-top:2px; margin-bottom:1px;">
                       
                        <tr>
                            <th colspan="2" class="text-uppercase text-center" style="padding: 0px 2px;">Employee Details</th>
                            <th colspan="2" class="text-uppercase text-center" style="padding: 0px 2px;">Petty Cash Details</th>
                        </tr>
                        <tr>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Employee</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="o.empl_id.name"/></td>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Reference No.</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="o.petty_cash_id.name" /></td>
                        </tr>
                        <tr>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Department</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="o.department_id.name" /></td>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Applied Date</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="o.applied_date" t-options="{'widget':'date'}"/></td>
                        </tr>
                        <tr>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Designation</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="o.job_id.name"/></td>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Disbursed Date</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="o.payment_date" t-options="{'widget':'date'}"/></td>
                        </tr>
                        <tr>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px" rowspan="2">Purpose</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px" rowspan="2" >
                                <t t-esc="o.purpose"/>
                            </td>
                            <th style="border:1px solid #e0e0e0;padding: 0px 2px">Currency</th>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><t t-esc="o.currency_id.name"/></td>
                        </tr>
                         <tr>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"></td>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"></td>
                        </tr>
                    </table>
                    <table class="table table-sm" style="width:100%;border:1px solid #e0e0e0;border-collapse: collapse; margin-bottom: 1px;margin-top: 5px;">
                        <tr>
                            <td scope="col" class="text-uppercase text-center" style="font-weight: bold; width: 100%; background-color: #e0e0e0; padding: 0px 2px"> Settlement Details</td>
                        </tr>
                    </table>
                    <table class="table table-sm" style="border:1px solid #e0e0e0;border-collapse: collapse;margin-top:2px; margin-bottom:1px;">
                        <tr>
                            <th colspan="1" class="text-uppercase text-left" style="padding: 0px 2px;">Date</th>
                            <th colspan="1" class="text-uppercase text-left" style="padding: 0px 2px;">Category</th>
                            <th colspan="1" class="text-uppercase text-left" style="padding: 0px 2px;">Claim Type</th>
                            <th colspan="1" class="text-uppercase text-right" style="padding: 0px 2px;">Amount</th>
                        </tr>
                        <tr t-foreach="o.claim_bill_line_ids" t-as="record">
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="record.date"/></td>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="record.category_id.name"/></td>
                            <td style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="record.claim_type_id.claim_type"/></td>
                            <td class="text-uppercase text-right" style="border:1px solid #e0e0e0;padding: 0px 2px"><span t-esc="record.amount" /></td>
                        </tr>
                    </table>
                    <br/><br/>
                    <table class="" style="float:right;margin-top:2px; margin-bottom:1px;">
                        <tr>
                            <th colspan="3" class="text-right" style="padding: 0px 0px;">Advance Taken:</th>
                            <th colspan="1" class="text-right" style="padding: 0px 2px;"><span t-esc="o.amount_total" /></th>
                        </tr>
                        <tr>
                            <th colspan="3" class="text-right" style="padding: 0px 0px;">Total Expenses:</th>
                            <th colspan="1" class="text-right" style="padding: 0px 2px;"><span t-esc="o.expenses" /></th>
                        </tr>
                        <tr>
                            <th colspan="3" class="text-right" style="padding: 0px 0px;">Payable/Receivable:</th>
                            <th colspan="1" class="text-right" style="padding: 0px 2px;"><span t-esc="o.net_total" /></th>
                        </tr>
                    </table>
                        
                </div>
 
                </t>
                
                
            </t>
        </t>
        
    </template>

</odoo>
