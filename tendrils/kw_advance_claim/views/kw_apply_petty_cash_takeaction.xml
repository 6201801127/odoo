<odoo>
    <data>

        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_takeaction_tree">
            <field name="name">kw_adv_apply_petty_cash_takeaction.tree</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <tree string="Apply Petty Cash take action" edit='false' delete='false' create='false' default_order='create_date desc'>
                    <field name="name" readonly='1'/>
                    <field name="user_emp_id" string='Employee' readonly='1'/>
                    <field name="department_id" readonly='1'/>
                    <field name="job_id" readonly='1'/>
<!--                    <field name="petty_cash_type" readonly='1'/>-->
                     <field name="currency_id" readonly='1'/>
                    <field name="advance_amt" string="Amount" readonly='1' widget="monetary"/>
                    <field name="req_date" widget="date" readonly='1'/>
                    <field name="forwarded_by"/>
                    <field name="pending_status" invisible='1'/>
                    <field name="pending_at_status"/>
                    <field name="state" readonly='1'/>
                    <button name="take_action_button" string="Take Action" type="object" attrs="{'invisible': [('state','in',['cancel','reject','grant'])]}" help="message" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_takeaction_form">
            <field name="name">kw_adv_apply_petty_cash_takeaction.form</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <form delete='false' create='false' duplicate='0'>
                    <script>
                        $(document).ready(function(){ state=  $("[aria-pressed=true]").text().trim();
                           console.log(state);
                            if ((state == 'Approved')||(state == 'Hold')||(state == 'Rejected')){
                                $('.o_form_button_edit').hide();
                            }
                        });
                    </script>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,forward,approve,forward_acc,hold,grant,cancel,reject"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="hide_btn_cancel" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="show_apply_btn" invisible='1'/>
                                <field name="hide_claim_settlement_button" invisible='1'/>
                                <field name="hide_claim_settlement_button" invisible='1'/>
                                <field name="show_accounts_button" invisible='1'/>
                                <field name="name" invisible='1'/>
                                <field name="user_emp_id" string='Employee Name' options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="department_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="division"  force_save="1" attrs="{'invisible': [('division','=', False)]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="section"  force_save="1" attrs="{'invisible': [('section','=', False)]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="practise"  force_save="1" attrs="{'invisible': [('practise','=', False)]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="job_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="petty_cash_type" widget="radio" options="{'horizontal': true}" readonly='1' invisible="1"/>
                            </group>

                            <group>
                                <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="advance_amt" string="Amount" widget="monetary" attrs="{'readonly': [('state','in', ['approve','release','cancel','reject'])]}"/>
                                <field name="create_date" widget="date" readonly='1' string="Applied Date"/>
                                <field name="req_date" widget="date" readonly='1'/>
                                <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('state','in', ['approve','release','cancel','reject'])]}"/>
                                <field name="claim_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('state','in', ['approve','release','cancel','reject'])]}"/>
                                <field name="description" readonly='1'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_adv_apply_petty_cash_takeaction">
            <field name="name">Take Action</field>
            <field name="res_model">kw_advance_apply_petty_cash</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('action_to_be_taken_by.user_id','=',uid),('state','in',['applied','hold','forward'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_adv_apply_petty_cash_takeaction_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No records to show...
                </p>
            </field>
        </record>


    </data>
</odoo>