<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

		<record model="ir.ui.view" id="kw_group_tree">
            <field name="name">kw_group.tree</field>
            <field name="model">kw_advance_group</field>
            <field name="arch" type="xml" >
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_group_form">
            <field name="name">kw_group.form</field>
            <field name="model">kw_advance_group</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_group_action">
            <field name="name">Advance Group</field>
            <field name="res_model">kw_advance_group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_group_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_group_form')})]"/>
        </record>

    </data>
</odoo>