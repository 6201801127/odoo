<odoo>
    <data>
        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_tree">
            <field name="name">kw_adv_apply_petty_cash.tree</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <tree string="Apply Petty Cash" default_order='create_date desc'>
                    <field name="name"/>
                    <field name="user_emp_id" string='Employee'/>
                    <field name="department_id"/>
                    <field name="job_id"/>
<!--                    <field name="petty_cash_type"/>-->
                     <field name="currency_id"/>
                    <field name="advance_amt" string=" Amount" widget="monetary"/>
                    <field name="req_date" widget="date"/>
                    <field name="forwarded_by" invisible="1"/>
                    <field name="pending_status" invisible='1'/>
                    <field name="pending_at_status"/>
                    <field name="state"/>
                    <field name="hide_btm_claim" invisible='1'/>
                    <field name="check_settlement_user" invisible='1'/>
                    <button class="btn-primary" type="object" name="get_claim_record" attrs="{'invisible': ['|','|',('state','!=', 'release'),('check_settlement_user','=',False),('hide_btm_claim','=', True)]}" string="Petty Cash Settlement"></button>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_form">
            <field name="name">kw_adv_apply_petty_cash.form</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <form delete='false' create='false' duplicate='0'>
                    <script>
                        $(document).ready(function(){ state=  $("[aria-pressed=true]").text().trim();
                           console.log(state);
                            if (state != 'Draft'){
                                $('.o_form_button_edit').hide();
                            }
                            
                        });
                    </script>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,forward,approve,forward_acc,hold,grant,cancel,reject"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="kw_advance_claim.group_kw_advance_claim_user">
                            <button class="oe_stat_button " type="object" name="get_claim_record" icon="fa-inr fa-lg" style="float:right;height=60px;" attrs="{'invisible': ['|','|',('state','!=', 'release'),('check_settlement_user','=',False),('hide_btm_claim','=', True)]}" string="Petty Cash Settlement">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="hide_btn_cancel" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="show_accounts_button" invisible='1'/>
                                <field name="show_apply_btn" invisible='1'/>
                                <field name="hide_btm_claim" invisible='1'/>
                                <field name="name" invisible='1'/>
                                <field name="user_emp_id" string='Employee Name' readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="division"  force_save="1" attrs="{'invisible': [('division','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="section"  force_save="1" attrs="{'invisible': [('section','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="practise"  force_save="1" attrs="{'invisible': [('practise','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="petty_cash_type" widget="radio" options="{'horizontal': true}" invisible="1"/>
                                <field name="action_by" invisible='1'/>
                                <field name="mail_sent" invisible="1"/>
                            </group>

                            <group>
                                <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="advance_amt" string="Amount" widget="monetary"/>
                                <field name="req_date" widget="date"/>
                                <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="claim_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="description"/>
                                <field name="payment_date" attrs="{'invisible': [('payment_date','=', False)]}" readonly="1"/>
                                <field name="check_settlement_user" invisible='1'/>

                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="search_view_petty_cash" model="ir.ui.view">
            <field name="name">petty.cash.search</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <search string="Petty Cash">
                    <field name="name" string="Ref"/>
                    <field name="settlement_status"/>
                    <field name="user_emp_id"/>
                    <!-- <filter name="settlement_status" string="Settlement Status"/> -->
                    <group expand="0" string="Group By">
                        <filter string="Settled" name="settled" domain="[('settlement_status','=','settle')]"/>
                        <filter string="Not Settled" name="notsettled" domain="[('settlement_status','=','notsettle')]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_adv_apply_petty_cash_action">
            <field name="name">Apply Petty Cash</field>
            <field name="res_model">kw_advance_apply_petty_cash</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'ra_access':0,'user_access':1,'default_mail_sent':True}</field>
            <field name="domain">[('create_uid','=',uid)]</field>
            <field name="search_view_id" ref="search_view_petty_cash"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_adv_apply_petty_cash_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_adv_apply_petty_cash_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No records to show...
                </p>
            </field>
        </record>

    <record id="kw_adv_apply_petty_cash_server_action" model="ir.actions.server">
            <field name="name">Petty Cash Report</field>
            <field name="condition">True</field>
            <field name="model_id" ref="kw_advance_claim.model_kw_advance_apply_petty_cash"/>
            <field name="state">code</field>
            <field name="code">
if env.user.has_group('kw_advance_claim.group_kw_advance_claim_user') and not env.user.has_group('kw_advance_claim.group_kw_advance_claim_admin') and not env.user.has_group('kw_advance_claim.group_kw_advance_claim_account') and not env.user.has_group('kw_employee.group_hr_ra'):
    tree_view_id = env.ref('kw_advance_claim.kw_apply_petty_cash_tree_report').id
    form_view_id = env.ref('kw_advance_claim.kw_apply_petty_cash_form_report').id
    action = {
            'type': 'ir.actions.act_window',
            'name' : 'Petty Cash Report',
            'views': [(tree_view_id, 'tree')],
            'view_mode': 'tree,form',
            'res_model': 'kw_advance_apply_petty_cash',
            'views': [(tree_view_id, 'tree'), (form_view_id,'form')],
            'domain':[('create_uid','=',env.user.employee_ids.user_id.id)],
            }
else:
    action = {
            'type': 'ir.actions.act_window',
            'name' : 'Petty Cash Report',
            'view_mode': 'form',
            'res_model': 'kw_advance_petty_cash_report_wizard',
            'target': 'new',
    }
            </field>
    </record>
    </data>
</odoo>