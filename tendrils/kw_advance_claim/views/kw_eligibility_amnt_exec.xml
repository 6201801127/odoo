<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_eligibility_amnt_exec_tree">
            <field name="name">kw_eligibility_amnt_exec.tree</field>
            <field name="model">kw_advance_eligibility_amnt_exec</field>
            <field name="arch" type="xml">
                <tree string="Eligibility Amount Exception">
                    <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="amnt"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_eligibility_amnt_exec_form">
            <field name="name">kw_eligibility_amnt_exec.form</field>
            <field name="model">kw_advance_eligibility_amnt_exec</field>
            <field name="arch" type="xml">
                <form string="Eligibility Amount Exception">
                    <sheet>
                        <group>
                            <group>
                                <!-- <field name="eligibility_amnt_reff_no"/> -->
                                <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <!-- <field name="group_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/> -->
                                <field name="dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'department')]"/>
                                <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('dept_id', '=', False)]}"/>
                                <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('division', '=', False)]}"/>
                                <field name="practise" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('section', '=', False)]}"/>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="amnt"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_eligibility_amnt_exec_action">
            <field name="name">Advance Eligibility Amount Exception</field>
            <field name="res_model">kw_advance_eligibility_amnt_exec</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>