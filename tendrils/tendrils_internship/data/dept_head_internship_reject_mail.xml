<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="internship_dept_head_reject_email_template" model="mail.template">
            <field name="name">Dept Head Reject</field>
            <field name="subject">Dept Head Reject</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <field name="model_id" ref="model_dept_head_approval_wiz"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['name']}
                                    </h5>
                                    
                                    <p>The internship has been rejected  by ${ctx['reject_by']}. </p>     
                                    
                                   
                                </div>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Intern Details:</span>
                                    </h5>
                                       
                                </div>
                                <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;margin-left: 1.2rem;">
                                    <tr>
                                        <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Name </th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Mail Id </th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Qualification</th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Refered By</th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Rejected By</th>
                                        
                                    </tr>
                                    <tr>
                                        <td style="color:#000000;height: 34px;">
                                            ${ctx['name']}

                                        </td>
                                        <td style="color:#000000;height: 34px;">
                                            ${ctx['mail_to']}

                                        </td>
                                        <td style="color:#000000;height: 34px;">
                                            ${ctx['highest_qualification']}
                                        </td>
                                        <td style="color:#000000;height: 34px;">
                                            ${ctx['refered_by']}    
                                        </td>
                                        <td style="color:#000000;height: 34px;">
                                            ${ctx['reject_by']}
                                        </td>
                                    </tr>
                                </table>
    
    
                            </td>
                        </tr>
                    </thead>
                </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>