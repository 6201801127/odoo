<odoo>
    <data>
       <!-- ===========================L & K Batch View================================================= -->
      <record id="lk_training_batch_form" model="ir.ui.view">
        <field name="name">lk_training_batch form</field>
        <field name="model">lk_training_batch</field>
        <field name="arch" type="xml">
            <form delete='false' duplicate="false" create='0'>
              <header>
                <button name="btn_internship_start" string="Internship Start" type="object" class="btn-primary" 
                attrs="{'invisible': [('session_bool', '=', True)]}"/>
                <button name="btn_internship_complete" string="Internship Complete" type="object" class="btn-primary" 
                attrs="{'invisible': ['|',('batch_stage','=','Draft'),('is_complete_internship', '=', True)]}"
                />
                <field name="batch_stage" widget="statusbar"
                statusbar_visible="Draft,Start,Complete"/>
              </header>
                <sheet>
                  <div class="oe_button_box" name="button_box" style="width:100%;margin-top:-16px;margin-right:-16px;">
                    <button name="view_internship_session" class="oe_stat_button" icon="fa-calendar" type="object"
                    attrs="{'invisible': [('batch_stage', '!=', 'Start')]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text font-weight-bold">
                                <field name="session_count"/>
                                Session(s)
                            </span>
                        </div>
                    </button>
                  </div>
                    <group>
                        <group>
                          <field name="batch_name" readonly="1" />
                          <field name="financial_year_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                          <field name="start_date" readonly="1"/>
                          <field name="close_date" readonly="1"/>
                          <field name="session_bool" invisible = '1'/>
                          <field name="is_complete_internship" invisible = '1'/>
                          
                          <field name="employee_ids">
                              <tree editable = '1' create = '0' style="pointer-events:none;"> 
                                <field name="intern_name" readonly ='1'/>
                                <field name="contact_no" readonly ='1'/>
                                <field name="email_id" readonly ='1'/>
                                <field name="highest_qualification" readonly ='1'/>
                                <field name="college_name" readonly ='1'/>
                                <field name="refered_by" readonly ='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="internship_topic" readonly ='1'/>
                                <!-- <field name="intern_document_upload" readonly ='1'/> -->
                                <field name="intern_doc_filename" invisible ='1'/>
                                <field name="intern_document_upload" filename="intern_doc_filename" widget="FieldBinary" string = 'Intern Document'/>

                              </tree>
                              <form>

                              </form>
                          </field>
                        </group>
                    </group>
                   
                </sheet>
            </form>
        </field>
      </record>
      
      <record model="ir.ui.view" id="lk_training_batch_list">
        <field name="name">lk_training_batch list</field>
        <field name="model">lk_training_batch</field>
        <field name="arch" type="xml">
            <tree delete='0' import='0' create='0'>
              <field name="financial_year_id"/>
              <field name="batch_name"/>
              <field name="start_date"/>
              <field name="close_date"/>
              <field name="employee_ids" widget="many2many_tags"/>
            </tree>
        </field>
      </record>
       <!-- ===========================End L & K Batch View================================================= -->
       <!-- ===========================Upload Document Wizard View================================================= -->
       <record id="internship_final_doc_upload_form_view" model="ir.ui.view">
         <field name="name">internship_final_doc_upload Form</field>
         <field name="model">internship_final_doc_upload</field>
         <field name="arch" type="xml">
           <form>
            <sheet>
              <group>
                <field name="interns_data_id">
                    <tree editable = '1' create = '0' edit='1'> 
                      <field name="intern_name" readonly ='1'/>
                      <field name="contact_no" readonly ='1'/>
                      <field name="email_id" readonly ='1'/>
                      <field name="highest_qualification" readonly ='1'/>
                      <field name="college_name" readonly ='1'/>
                      <field name="refered_by" readonly ='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                      <field name="internship_topic" readonly ='1'/>
                      <!-- <field name="intern_document_upload" required='1'/> -->
                      <field name="intern_doc_filename" invisible ='1' required='1'/>
                      <field name="intern_document_upload" filename="intern_doc_filename" widget="FieldBinary" string = 'Interns Document' required='1'/>
                    </tree>
                  </field>
                  </group>
                  <group>
                    <!-- <group>
                      <field name="upload_file"/>
                    </group> -->
                      
                  </group>
                <footer>
                    <center>
                      <button name="upload_documents" type="object" string="Upload" class="btn-success" context="{'button':'chro_Reject'}"/>
                      <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                    </center>
                  </footer>
                </sheet>
        </form>
        </field>
      </record>    
      <!-- ===========================Upload Document Wizard View================================================= -->
  
      <!-- actions opening views on models -->
      
      <record model="ir.actions.act_window" id="lk_training_batch_action_id">
        <field name="name">Batches</field>
        <field name="res_model">lk_training_batch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'edit':False}</field>
        <field name="view_ids" eval="[(5, 0, 0),
              (0, 0, {'view_mode': 'tree', 'view_id': ref('lk_training_batch_list')}),
              (0, 0, {'view_mode': 'form', 'view_id': ref('lk_training_batch_form')})]"/>
      </record>
    
  
     
      <menuitem name="Batches"
        id="l_and_k_batch_menu"
        parent='l_and_K_parent_menu'
        action="lk_training_batch_action_id"
        groups='tendrils_internship.group_tendrils_internship_training_manager'
        sequence="2"/>
  
     
    </data>
  </odoo>