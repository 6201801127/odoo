      <record id="internship_update_attendance_form" model="ir.ui.view">
        <field name="name">internship_update_attendance form </field>
        <field name="model">internship_update_attendance</field>
        <field name="arch" type="xml">
            <form delete='false' duplicate="false" create = "false">
                <sheet>
                    
                    <group>
                        <group>
                          <field name="internship_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                          <field name="session_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                          <field name="date"/>
                          <field name="from_time"/>
                          <field name="to_time"/>
                          <field name="internship_attendance_ids">
                              <tree editable = '1'  delete='0' create='0'> 
                                  <field name="attend_intern_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1' style="pointer-events:none;" force_save="1"/>
                                  <field name="attended_bool" force_save="1"/>
                                
                            </tree>
                          </field>
                          
                        </group>
                    </group>
                   
                </sheet>
            </form>
        </field>
      </record>
</odoo>
