<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="td_internship_schedule_form" model="ir.ui.view">
        <field name="name">td_internship_schedule form </field>
        <field name="model">td_internship_schedule</field>
        <field name="arch" type="xml">
            <form delete='false' duplicate="false">
                <sheet>
                    
                    <group>
                        <group>
                          <field name="instructor" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                          <field name="sessioin"/>
                          <field name="session_type"/>
                          <field name="date"/>
                          <field name="from_time"/>
                          <field name="to_time"/>
                          <field name="internship_id" invisible="1"/>
                          
                        </group>
                    </group>
                   
                </sheet>
            </form>
        </field>
      </record>
      
      <record model="ir.ui.view" id="td_internship_schedule_list">
        <field name="name">td_internship_schedule list</field>
        <field name="model">td_internship_schedule</field>
        <field name="arch" type="xml">
            <tree delete='0' import='0'>
                <field name="instructor" />
                <field name="sessioin"/>
                <field name="session_type"/>
                <field name="date"/>
                <field name="from_time"/>
                <field name="to_time"/>
                <field name="internship_id" invisible="1"/>
                <button name="update_attendance" string ='Update Attendance' type="object" class="btn btn-primary"/>

            </tree>
        </field>
      </record>
      <record id="td_internship_schedule_kanban" model="ir.ui.view">
        <field name="name">td_internship_schedule kanban</field>
        <field name="model">td_internship_schedule</field>
        <field name="type">kanban</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <kanban import="false" delete="false">
                <field name="instructor" />
                <field name="sessioin"/>
                <field name="session_type"/>
                <field name="date"/>
                <field name="from_time"/>
                <field name="to_time"/>
                <field name="internship_id" invisible="0"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top container p-2 m-0">
                                <div class="o_kanban_record_headings">
                                    <div class="text-left">
                                        <h3 class='text-uppercase'>
                                            <field name="sessioin"/>
                                        </h3>
                                        <h3 class='text-uppercase badge badge-warning text-wrap font-weight-bold' style="font-size: 1rem;">
                                            <field name="session_type"/>
                                        </h3>
                                        <div class="clearfix"/>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <span class="font-weight-bold fa fa-user mb-2"/>
                                                    &amp;nbsp; <b> Instructor: </b>
                                                <field name="instructor"/>
                                                <br />
                                                <span class="font-weight-bold fa fa-calendar-o mb-2"/>
                                                    &amp;nbsp; <b> Date: </b>
                                                <field name="date" widget="date"/>
                                                <br/>
                                                <span class="font-weight-bold fa fa-clock-o mb-2"/>
                                                    &amp;nbsp; <b> Start Time: </b>
                                                <field name="from_time" />
                                                <br/>
                                                <span class="font-weight-bold fa fa-clock-o mb-2"/>
                                                    &amp;nbsp; <b> End Time: </b>
                                                <field name="to_time"/>
                                            </div>
                                        </div>
                                        <div class="row mt-4">
                                            <div class="col-12">
                                                <button name="update_attendance" type="object" class="btn btn-primary">Update Attendance </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

            
