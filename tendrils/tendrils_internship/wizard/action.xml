<odoo>
    <data>
        <!-- =========================WIZARD VIEW===================================== -->
        <record model="ir.ui.view" id="internship_remark_approve_form_view">
            <field name="name">dept_head_approval_wiz form</field>
            <field name="model">dept_head_approval_wiz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="approve_btn" type="object" string="Approve" class="btn-primary" context="{'button':'Approve'}"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="internship_remark_reject_form_view">
            <field name="name">dept_head_approval_wiz form</field>
            <field name="model">dept_head_approval_wiz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="approve_btn" type="object" string="Reject" class="btn-danger" context="{'button':'Reject'}"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="internship_grant_form_view">
            <field name="name">internship grant form view</field>
            <field name="model">dept_head_approval_wiz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="approve_btn" type="object" string="Grant" class="btn-warning" context="{'button':'Grant'}"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="chro_reject_form_view">
            <field name="name">chro_reject_ form</field>
            <field name="model">dept_head_approval_wiz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="approve_btn" type="object" string="Reject" class="btn-danger" context="{'button':'chro_Reject'}"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>