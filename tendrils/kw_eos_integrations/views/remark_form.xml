<odoo>
    <data>
    <!-- Approve remark -->
        <record id="view_eos_ra_approve_remark_form" model="ir.ui.view">
            <field name="name">view.eos_ra_approve_remark.form</field>
            <field name="model">kw_eos_checklist</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="199"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").show();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <sheet>
                            <field name="applicant_id" required='1' invisible='1'/>
                            <field name="ra_remark" required="1"/>
                    </sheet>
                    <footer>
                        <button name="action_ra_remark_approve" string="Submit" type="object" class="btn-success"/>
                        <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
    
    <!-- Reject Remark -->

        <record id="view_eos_ra_reject_remark_form" model="ir.ui.view">
            <field name="name">view.eos_ra_reject_remark.form</field>
            <field name="model">kw_eos_checklist</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="197"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").show();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <sheet>
                            <field name="applicant_id" required='1' invisible='1'/>
                            <field name="ra_remark" required="1"/>
                    </sheet>
                    <footer>
                        <button name="action_ra_remark_reject" string="Submit" type="object" class="btn-success"/>
                        <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>


        <!-- Dept head remark -->
        <record id="view_eos_grant_remark_form" model="ir.ui.view">
            <field name="name">view.eos_grant_remark.form</field>
            <field name="model">kw_eos_checklist</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="198"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").show();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <sheet>
                        <group>
                            <field name="applicant_id" required='1' invisible='1'/>
                            <field name="dept_head_remark" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_dept_head_remark_grant" string="Submit" type="object" class="btn-success"/>
                        <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>