<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_eos_report_wizard_view" model="ir.ui.view">
            <field name="name">EOS Report</field>
            <field name="model">kw_eos_report_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="applied_by" widget="radio" options="{'horizontal': true}"/>
                            <field name="report_state" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('applied_by', '=','all')],'required':[('applied_by', 'in', ['dt','my','employee','exemployee'])]}" />
                            <field name="year" attrs="{'invisible': [('applied_by', 'in', ['dt','employee','all','exemployee'])],'required':[('applied_by', '=', 'my')]}"/>
                            <field name="month" attrs="{'invisible': [('applied_by', 'in', ['dt','employee','all','exemployee'])],'required':[('applied_by', '=', 'my')]}"/>

                            <field name="date_from" attrs="{'invisible': [('applied_by', 'in', ['my','employee','all','exemployee'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />
                            <field name="date_to" attrs="{'invisible': [('applied_by', 'in', ['my','employee','all','exemployee'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />

                            <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('applied_by', 'in', ['my','dt','all','exemployee'])],'required':[('applied_by', '=', 'employee')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="exemployee_ids" context="{'active_test':False}" force_save='1' widget="many2many_tags" attrs="{'invisible': [('applied_by', 'in', ['my','dt','all','employee'])],'required':[('applied_by', '=', 'exemployee')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            
                        </group>
                    </group>
                    <footer>
                        <button name="get_eos_report_data" string="View Reports" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>