<odoo>
  <data>


    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="kw_facilities_master_list">
      <field name="name">kw_facilities_master_list</field>
      <field name="model">kw_facilities_master</field>
      <field name="arch" type="xml">
        <tree>
          <field name="facility_name"/>
          <field name="code"/>
          <field name="active"/>

        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="kw_facilities_master_form">
      <field name="name">kw_facilities_master_form</field>
      <field name="model">kw_facilities_master</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="facility_name"/>
              <field name="code"/>
              <field name="active"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="kw_facilities_master_action_window">
      <field name="name">Add Facilities</field>
      <field name="res_model">kw_facilities_master</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
    </record>


  </data>
</odoo>