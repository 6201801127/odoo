<odoo>
  <data>

    <record model="ir.ui.view" id="kw_tour_custom_list">
      <field name="name">kw_tour_custom_list</field>
      <field name="model">kw_tour</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="tour_type_id"/>
          <field name="date_travel"/>
          <field name="date_return"/>
          <field name="city_id"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="kw_hr_employee_custom_list">
      <field name="name">kw_hr_employee_custom_list</field>
      <field name="model">hr.employee</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="emp_code"/>
          <field name="job_id"/>
          <field name="department_id"/>
          <field name="work_email"/>
          <field name="work_phone"/>
          <field name="mobile_phone"/>
        </tree>
      </field>
    </record>


  </data>
</odoo>