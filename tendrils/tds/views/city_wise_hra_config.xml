<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <!-- city_wise_hra_config_master tree view -->
       <record id="city_wise_hra_config_master_view_tree" model="ir.ui.view">
        <field name="name">city_wise_hra_config_master.view.tree</field>
        <field name="model">city_wise_hra_config_master</field>
        <field name="arch" type="xml">
            <tree editable='top'>
                <field name="base_branch_id"/>
                <field name="city"/>
                <field name="hra_percentage"/>
            </tree>
        </field>
       </record>
       <record id="city_wise_hra_config_master_action" model="ir.actions.act_window">
            <field name="name">HRA Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">city_wise_hra_config_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
       </record>

       <!-- tds_amount_config tree view -->
       <record id="tds_amount_config_view_tree" model="ir.ui.view">
        <field name="name">tds_amount_config.view.tree</field>
        <field name="model">tds_amount_config</field>
        <field name="arch" type="xml">
            <tree editable='top'>
                <field name="date_range" options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                required="1"/>
                <field name="enable_actual" options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                required="1"/>
            </tree>
        </field>
       </record>
       <!-- tds_amount_config action window -->
       <record id="tds_amount_config_action" model="ir.actions.act_window">
        <field name="name">Amount Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tds_amount_config</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
       </record>
    </data>
</odoo>