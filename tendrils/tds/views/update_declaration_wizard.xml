<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="declaration_data" model="ir.config_parameter">
            <field name="key">tds.declaration_data</field>
            <field name="value">0</field>
        </record>
        <record model="ir.ui.view" id="update_declaration_wizard_view">
            <field name="name">Employee Data</field>
            <field name="model">update_declaration_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date_range"
                               options="{'no_open': True,'no_create':True,'no_edit':True}"
                                required="1" />
                            <field name="total_records" />
                            <field name="total__log_records"/>
                        </group>
                        <footer>
                            <center>
                                <button name="update_declarations" type="object" string="Update "
                                    class="btn-primary" />
                                 <button name="delete_declarations_btn" type="object" string="Delete"
                                    class="btn-danger" style='margin-left:5px'/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="update_declaration_wizard_window">
            <field name="name">Update Declaration Data</field>
            <field name="res_model">update_declaration_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="update_declaration_wizard_view" />
        </record>
        <menuitem name="Update Declaration" id="menu_update_declaration_wizard"
            parent="disable_debug_mode.menu_technical_developer" sequence="106"
            action="update_declaration_wizard_window" groups="disable_debug_mode.group_developer" />


    </data>
</odoo>