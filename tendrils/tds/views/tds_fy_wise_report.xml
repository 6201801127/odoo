<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_declaration_finance_approved_view" model="ir.ui.view">
            <field name="name">hr.declaration.view.tree</field>
            <field name="model">hr.declaration</field>
            <field name="arch" type="xml">
                <tree create="false" editable="top" delete="1">
                    <field name="date_range" string="Financial Year" readonly="1" class='regular'/>
                    <field name="tax_regime" readonly="1" class='regular'/>
                    <field name="employee_id" string="Name" invisible="1" class='regular'/>
                    <field name="emp_name" class='regular'/>
                    <field name="emp_code" string="Employee Code" readonly="1" class='regular'/>
                    <field name="employement_type" class='regular'/>
                    <field name="pan_number" readonly="1" string='PAN of the Employee' class='regular'/>
                    <field name="bank_account" readonly="1" class='regular'/>
                    <field name="date_of_joining" string="Date to which Employed with Current Employer" class='regular'/>
                    <field name="last_working_day" class='regular' />
                    <field name="basic_salary" string="Basic Salary" readonly="1" class='salary_head'/>
                    <field name="hra" readonly="1" string="House Rent Allowance"  class='salary_head'/>
                    <field name="conveyance" readonly='1'  class='salary_head' string='Conveyance Allowance'/>
                    <field name="productivity" readonly='1' class='salary_head' string='Productivity Bonus'/>
                    <field name="commitment" readonly='1' class='salary_head' string='Commitment Bonus'/>
                    <field name="lta" readonly='1' class='salary_head' string='Leave Travel Allowance'/>
                    <field name="prof_persuit" readonly='1' class='salary_head' string='Professional Pursuit'/>
                    <field name="incentive" readonly='1' class='salary_head'/>
                    <field name="variable" readonly='1' class='salary_head'/>
                    <field name="splalw" readonly='1' string='Special Allowance' class='salary_head'/>
                    <field name="equalw" readonly='1' string='Equitable Allowance' class='salary_head'/>
                    <field name="leave_encahment" readonly='1' class='salary_head'/>
                    <field name="city_alw" readonly='1' string='City Allowance' class='salary_head'/>
                    <field name="trng_inc" readonly='1' string='Training Incentive' class='salary_head'/>
                    <field name="erbonus" string='Employee Refferal Bonus' readonly='1' class='salary_head'/>
                    <field name="other_incentive" readonly='1' class='salary_head'/>
                    <field name="arrear" readonly='1' class='salary_head'/>
                    <field name="lwop" invisible="1"  class='salary_head'/>
                    <field name="lwop_amt_negative" readonly="1"  class='salary_head' string='LWOP'/>
                    <field name="total_salary" readonly='1' string="Gross Salary from CSM" class='salary_head'/>
                    <field name="previous_employer_income_final" string="Salary from Previous Employer" readonly="1" class='exemption'/>
                    <field name="calculate_interest_payment" readonly='1' string='Income/Loss From House Property' class='exemption'/>
                    <field name="final_income_from_bank_other" readonly='1' class='exemption' string='Income from Other Sources'/>
                    <field name="total_gross_salary" string='Gross Total Income' class='exemption'/>
                    <field name="hra_exemption" string="HRA Exemption U/s - 10C (13A)" readonly="1" class='deduction'/>
                    <!-- <field name="professional_tax" string="Professional Tax Deduction U/s 16" readonly="1" class='deduction'/> -->
                    <field name="final_lta_spent_by_employee"  readonly='1' class='deduction' string='LTA Exemption U/s - 10 (5)'/>
                    <field name="final_prof_persuit_spent_by_employee" readonly='1' class='deduction' string='Professional Pursuit Exemption U/s - 10 (14)'/>
                    <field name="standard_deduction" string="Standard Deduction U/s 16" readonly="1" class='deduction'/>
                    <field name="professional_tax" readonly='1' string='Professional Tax Deduction U/s 16 (iii)' class='deduction'/>
                    <field name="total_exemption" string='Total Exemption U/s - 10 &amp; 16' class='exemption'/>
                    <field name="gross_total_income" readonly='1' string='Net Total Income' class='declaration'/>
                    <!-- <field name="taxable_salary_from_csm" readonly='1' class='declaration'/> -->
                    <field name="allowed_rebate_under_80c" readonly='1' class='declaration'/>
                    <field name="allowed_rebate_under_80ccd" readonly='1' class='declaration'/>
                    <field name="allowed_rebate_under_80d" readonly='1' class='declaration'/>
                    <field name="allowed_rebate_under_80ddb" readonly='1' class='declaration'/>
                    <field name="allowed_rebate_under_80dd" readonly='1' class='declaration'/>
                    <field name="allowed_rebate_under_80e" readonly='1' class='declaration'/>
                    <field name="allowed_rebate_under_80g" readonly='1' class='declaration'/>
                    <field name="final_amount" readonly='1' class='declaration'/>
                    <field name="taxable_income" readonly='1' class='finals'/>
                    <field name="tax_payable" readonly='1' class='finals'/>
                    <field name="rebate" readonly='1' class='finals' string='Rebate u/s 87A'/>
                    <field name="net_tax_payable" readonly='1' class='finals'/>
                    <field name="additional_sub_chrg" readonly='1' class='finals'/>
                    <field name="additional_edu_cess" readonly='1' string='Educational cess' class='finals'/>
                    <field name="total_tax_payable" readonly='1' class='finals'/>
                    <field name="final_tds_previous_employer" readonly='1' string='TDS Deducted by Previous Employer' class='finals'/>
                    <field name="tds" string='TDS Deducted by Current employer' class='finals'/>
                    <field name="tax_recovered" readonly='1' string='Total TDS Deducted' class='finals'/>
                    <field name="balance_tax_payable" readonly='1' class='finals'/>
                    <field name="monthly_tax_to_recover" readonly='1' class='finals'/>
                    <field name="housing_loan_institute" string="Name of Houseing Loan Institution"/>
                    <field name="housing_loan_institute_pan" string="PAN of Houseing Loan Institution"/>
                    <field name="name_of_landlord" string="Name of Landlord"/>
                    <field name="pan_of_landlord" string="PAN of Landlord"/>
                    <field name="doc_boolean" string="Actual Document Upload Status"/>
                    <field name="state"/>

                    <button name="view_payslips" type="object" string="View Payslips" class="btn-primary"/>
                    <button name="view_yearly_hr_declaration" type="object" string="View Declaration"
                    class="btn-primary"/>
                </tree>
            </field>
        </record>
        
        <record id="hr_declaration_finalce_view_action" model="ir.actions.act_window">
            <field name="name">TDS Reports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.declaration</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_hr_declaration_request_search_form" />
            <field name="context">{'create':False,'edit':False,'delete':True,'import':False,'duplicate':False,'search_default_fiscal_year':1}</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_declaration_finance_approved_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('tds.hr_declaration_bifurcation_view_form')})]" />
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="Declaration_report_fy_menu_act" name="New Declaration Report"
            parent="tds.report_action" action="hr_declaration_finalce_view_action" sequence="2"/>
    </data>
</odoo>