<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- hr_declaration_log tree view -->
        <record id="hr_declaration_log_view_tree" model="ir.ui.view">
            <field name="name">hr_declaration_log.view.tree</field>
            <field name="model">hr_declaration_log</field>
            <field name="arch" type="xml">
                <tree create='0' delete='0'>
                    <field name="date_range"/>
                    <field name="employee_id"/>
                    <field name="tax_regime"/>
                    <field name="create_date" string='Changed On'/>
                </tree>
            </field>
        </record>

        <!-- hr_declaration_log search view -->
        <record id="hr_declaration_log_view_search" model="ir.ui.view">
            <field name="name">hr_declaration_log.view.search</field>
            <field name="model">hr_declaration_log</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="employee_id"/>
                    <field name="create_date"/>
                    <field name="date_range"/>
                    <filter string="Changed Date" name="create_date" date="create_date"/>
                    <filter string="New Regime" name="new_regime" domain="[('tax_regime','=','new_regime')]"/>
                    <filter string="Old Regime" name="old_regime" domain="[('tax_regime','=','old_regime')]"/>

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_declaration_log_action">
            <field name="name">Declaration Log</field>
            <field name="res_model">hr_declaration_log</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>
        <menuitem name="Declaration Log" id="declaration_log_menu" parent="report_action" sequence="107" action="hr_declaration_log_action"/>
    </data>
</odoo>