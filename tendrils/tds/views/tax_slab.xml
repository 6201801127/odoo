<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--=======Tree view of Income Tax Slabs=======-->
    <record id="tax_slab_tree_view" model="ir.ui.view">
        <field name="name">tax_slab.tree</field>
        <field name="model">tax_slab</field>
        <field name="arch" type="xml">
            <tree string="Income Tax Slab" editable="top" delete="1">
                  <field name="tax_regime" required="1" />
                  <field name="date_range" required="1"/>
                  <field name="salary_from" required="1" />
                  <field name="salary_to" required="1" />
                  <field name="age_from" required="1" />
                  <field name="age_to" required="1" />
                  <field name="tax_rate" required="1"/>
            </tree>
        </field>
    </record>

    <record id="tax_cess_tree_view" model="ir.ui.view">
        <field name="name">tax_cess.tree</field>
        <field name="model">tax_cess</field>
        <field name="arch" type="xml">
            <tree string="Income Tax Slab" editable="top" delete="1">
                  <field name="tax_regime" required="1" />
                  <field name="date_range" required="1"/>
                  <field name="salary_from" required="1" />
                  <field name="salary_to" required="1" />
                  <field name="age_from" required="1" />
                  <field name="age_to" required="1" />
                  <field name="cess" required="1" />
            </tree>
        </field>
    </record>
    <record id="tax_cess_view_search" model="ir.ui.view">
        <field name="name">tax_cess.view.search</field>
        <field name="model">tax_cess</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <!-- Add your fields here -->
                  <field name="date_range" />
                  <field name="salary_from" />
                  <field name="salary_to" />
                  <field name="age_from" />
                  <field name="age_to" />
                  <field name="tax_regime"/>
                  <group expand="0" string="Group By">
                      <filter name="date_range" string="Financial Year" domain="" context="{'group_by':'date_range'}"/>
                      <filter name="tax_regime" string="Tax Regime" domain="" context="{'group_by':'tax_regime'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tax_surcharge_tree_view" model="ir.ui.view">
        <field name="name">tax_surcharge.tree</field>
        <field name="model">tax_surcharge</field>
        <field name="arch" type="xml">
            <tree string="Income Tax Slab" editable="top" delete="1">
                  <field name="tax_regime" required="1" />
                  <field name="date_range" required="1"/>
                  <field name="tax_regime" required="1" />
                  <field name="salary_from" required="1" />
                  <field name="salary_to" required="1" />
                  <field name="surcharge" required="1" />
            </tree>
        </field>
    </record>
    <record id="tax_surcharge_view_search" model="ir.ui.view">
        <field name="name">tax_surcharge.view.search</field>
        <field name="model">tax_surcharge</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <!-- Add your fields here -->
                  <field name="date_range" />
                  <field name="salary_from" />
                  <field name="salary_to" />
                  <field name="tax_regime"/>
                  <group expand="0" string="Group By">
                      <filter name="date_range" string="Financial Year" domain="" context="{'group_by':'date_range'}"/>
                      <filter name="tax_regime" string="Tax Regime" domain="" context="{'group_by':'tax_regime'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- tax_slab search view -->
    <record id="tax_slab_view_search" model="ir.ui.view">
        <field name="name">tax_slab.view.search</field>
        <field name="model">tax_slab</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <!-- Add your fields here -->
                  <field name="date_range" />
                  <field name="salary_from" />
                  <field name="salary_to" />
                  <field name="tax_rate" />
                  <field name="age_from" />
                  <field name="age_to" />
                  <field name="tax_regime"/>
                  <group expand="0" string="Group By">
                      <filter name="date_range" string="Financial Year" domain="" context="{'group_by':'date_range'}"/>
                      <filter name="tax_regime" string="Tax Regime" domain="" context="{'group_by':'tax_regime'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="tax_slab_action_view" model="ir.actions.act_window">
        <field name="name">Income Tax Slab</field>
        <field name="res_model">tax_slab</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="groups_id" eval="[(6,0,[ref('tds.group_manager_hr_declaration')])]"/>
        <field name="search_view_id" ref="tax_slab_view_search" />
        <field name="context">{'search_default_tax_regime':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
          No Record To Show...
            </p>
        </field>
    </record>
    <record id="tax_cess_action_view" model="ir.actions.act_window">
        <field name="name">Cess Master</field>
        <field name="res_model">tax_cess</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="groups_id" eval="[(6,0,[ref('tds.group_manager_hr_declaration')])]"/>
    </record>
    <record id="tax_surcharge_action_view" model="ir.actions.act_window">
        <field name="name">Surcharge Master</field>
        <field name="res_model">tax_surcharge</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="groups_id" eval="[(6,0,[ref('tds.group_manager_hr_declaration')])]"/>
    </record>
</odoo>