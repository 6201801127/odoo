<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_training_material_dms_integration_view_form" model="ir.ui.view">
            <field name="name">kw_training_material.dms.form</field>
            <field name="model">kw_training_material</field>
            <field name="inherit_id" ref="kw_training.view_kw_training_material_form" />
            <field name="arch" type="xml">
            <field name="material" position="replace">
                <field name="content_file" string="Attachment"  filename="file_name" widget="binary"/>
                <field name="file_name" invisible="1"/>
            </field>                
            </field>
        </record>  

        <record id="kw_training_material_dms_integration_view_form_view_only" model="ir.ui.view">
            <field name="name">kw_training_material.dms.form.view.only</field>
            <field name="model">kw_training_material</field>
            <field name="inherit_id" ref="kw_training.view_kw_training_material_view_only_form" />
            <field name="arch" type="xml">
                <field name="material" position="replace">
                    <field name="content_file" string="Attachment" filename="file_name" widget="binary"/>
                    <field name="file_name" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="kw_training_material_dms_integration_view_tree" model="ir.ui.view">
            <field name="model">kw_training_material</field>
            <field name="inherit_id" ref="kw_training.view_kw_training_material_tree" />
            <field name="arch" type="xml">
                <field name="material" position="replace">
                    <field name="file_name" invisible="1"/>
                    <field name="content_file" string="Download" widget="download_link" filename="file_name"/>
                </field>
            </field>
        </record>

        <record id="kw_training_material_dms_integration_view_tree_view_only" model="ir.ui.view">
            <field name="model">kw_training_material</field>
            <field name="inherit_id" ref="kw_training.view_kw_training_material_view_only_tree" />
            <field name="arch" type="xml">
                <field name="material" position="replace">
                    <field name="file_name" invisible="1"/>
                    <field name="content_file" string="Download" widget="download_link" filename="file_name"/>
                </field>
            </field>
        </record>

    </data>
</odoo>