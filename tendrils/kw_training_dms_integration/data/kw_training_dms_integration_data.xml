<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="kwdms_training_storage" model="kw_dms.storage">
            <field name="name">Training</field>
            <field name="save_type">file</field>
            <field name="activate_revision">True</field>
            <field name="activate_versioning">True</field>
        </record>

        <record id="kwdms_training_material_read_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Training Contents Folder Read Access Group</field>  
            <field name="perm_read">True</field> 
            <field name="groups" eval="[(4, ref('kw_training.group_kw_training_employee'))]"/>
        </record>

        <record id="kwdms_training_material_all_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Training Contents Folder All Access Group</field>  
            <field name="perm_create">True</field>          
            <field name="perm_read">True</field>  
            <field name="perm_write">True</field>          
            <field name="perm_unlink">True</field>  
            <field name="groups" eval="[(4, ref('kw_training.group_kw_training_manager'))]"/>
        </record>       
       

        <record id="kwdms_training_material_directory" model="kw_dms.directory">
            <field name="name">Contents</field>  
            <field name="is_root_directory">True</field>
            <field name="root_storage" ref="kwdms_training_storage"/>

            <field name="groups" eval="[(4, ref('kw_dms.kwdms_all_access_admin_grp')), (4, ref('kw_training_dms_integration.kwdms_training_material_all_access_grp')), (4, ref('kw_training_dms_integration.kwdms_training_material_read_access_grp'))]"/>
          
        </record>        
       

        <!--Default Config Setting for categories -->

         <!-- activate categories by default -->
        <function model="ir.config_parameter" name="set_param" 
        eval="('kw_dms.training_material_folder', ref('kw_training_dms_integration.kwdms_training_material_directory'))"/>
       
    </data>
</odoo>
