<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="kwdms_employee_doc_all_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Employee Doc Folder All Access Group</field>  
            <field name="perm_create">True</field>          
            <field name="perm_read">True</field>  
            <field name="perm_write">True</field>          
            <field name="perm_unlink">True</field>  
            <field name="groups" eval="[(4, ref('hr.group_hr_manager')),(4, ref('hr.group_hr_user'))]"/>
        </record>       

        

        <record id="kwdms_employee_doc_directory" model="kw_dms.directory">
            <field name="name">Employee Documents</field>  
            <field name="is_root_directory">True</field>
            <field name="root_storage" ref="kw_dms.kwdms_digilocker_storage"/>

            <field name="groups" eval="[(4, ref('kw_dms.kwdms_all_access_admin_grp')), (4, ref('kw_employee_dms_integration.kwdms_employee_doc_all_access_grp'))]"/>
          
        </record>        
       

        <!--Default Config Setting for folders -->

         <!-- activate folder by default -->
        <function model="ir.config_parameter" name="set_param" eval="('kw_dms.digilock_hr_employee_folder', ref('kw_employee_dms_integration.kwdms_employee_doc_directory'))" />

       
    </data>
</odoo>
