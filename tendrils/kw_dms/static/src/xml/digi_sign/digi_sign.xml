<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="kw_dms.digi_sign">

        <span></span>
      <!--  <t t-esc="sign_status"/> -->
		<div class="container" t-if="sign_status == 0">
			<div class="row ">
				Please make sure to attach the device with system, before proceeding to digital sign.			
			</div>

			<div class="row ">
				<div class="form-group col-sm-12">
					<label class="col-sm-2" >Select Position : </label>					
					<label class="radio-inline" ><input type="radio" id="radioPosition_1" name="radioPosition"  value="1" />Top</label>
					<label class="radio-inline" ><input type="radio" id="radioPosition_2"  name="radioPosition" checked="True" value="0" />Buttom</label>				
				</div>
			</div>

			<div class="row ">				
				<button name="btn_digi_sign" type="button" class="btn btn-primary  btn_digi_sign_proceed" >Proceed for E-sign</button>					
			</div>
		</div>

	</t>

	
</templates>