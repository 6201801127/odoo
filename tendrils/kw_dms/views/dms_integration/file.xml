<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   

        <record id="view_dms_integration_file_form" model="ir.ui.view">
            <field name="name">kw_dms_file.form</field>
            <field name="model">kw_dms.file</field>
            <field name="inherit_id" ref="kw_dms.view_dms_file_form" />
            <field name="arch" type="xml">

                <xpath expr="//group[@name='settings']" position="after">
                    <group>
                        <group attrs="{'invisible':[('res_model_name', '=', False)]}" >
                            <group >
                                <field name="res_model_name" string="Related Model"/> 
                               
                                
                            </group>
                            <group><button name="action_related_rec" string="View" type="object" icon="fa-external-link " /> </group>
                        </group>    
					</group>
                </xpath>


              

            </field>
        </record>

   

</odoo>