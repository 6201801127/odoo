<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<record id="res_config_settings_integration_view_form" model="ir.ui.view">
	    <field name="name">res.config.settings.view.form</field>
	    <field name="model">res.config.settings</field>
	    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
	    <field name="arch" type="xml">
	        <xpath expr="//div[@name='file']" position="after">
                <h2>Files Centralization</h2>
                <div class="row mt16 o_settings_container" name="access">



                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Policy Documents</span>
                            <div class="text-muted">
                                Centralize files attached to Policy Documents
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="dms_policy_doc_folder"/>
                                    <field name="dms_policy_doc_folder"/>
                                </div>
                            </div>
                        </div>
                    </div>

                     <!-- <div class="col-12 col-lg-6 o_setting_box">
                         <div class="o_setting_right_pane">
                          
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="dms_policy_doc_tags"/>
                                    <field name="dms_policy_doc_tags" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div> -->




                </div>

                <div class="row mt16 o_settings_container" name="access">



                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Digital Locker</span>
                            <div class="text-muted">
                                Centralize files attached to Employee Documents
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" for="dms_digilock_hr_employee_folder"/>
                                    <field name="dms_digilock_hr_employee_folder"/>
                                </div>

                               
                            </div>
                        </div>
                    </div>

                   
                </div>
			</xpath>

	    
            
	    </field>
	</record>
            
</odoo>

