<?xml version="1.0" encoding="UTF-8"?>
<odoo>


        <record id="view_dms_revision_file_form" model="ir.ui.view">
            <field name="name">kw_dms_file.form</field>
            <field name="model">kw_dms.file</field>
            <field name="inherit_id" ref="kw_dms.view_dms_file_form" />
            <field name="arch" type="xml">

                <xpath expr="//page[@name='page_technical']" position="after">

                    <page name="page_revision_history" string="Revision History" groups="kw_dms.group_dms_manager" attrs="{'invisible':['|',('revision_enabled', '=', False),('revision_ids', '=', False)]}" >

                        <field name="revision_enabled" invisible="1"/>
						<group>
							
                            <field name="revision_ids" string="Revision History" 
                            readonly="1"
                            > 
                                <tree default_order='create_date asc'> 

                                    <field name="name"/>
                                    <field name="version"/>
                                    <field name="create_date" /> 
                                    <field name="create_uid" string="Updated By" />
                                    
                                    <!-- <field name="directory" /> 
                                    <field name="storage" />  -->                                   
                                        
                                    <!--<field name="value" eval="'ir.actions.act_window,%d'%action_id"/>
                                            <field name="path_names" widget="path_names" string="Path" /> -->
                                </tree>  
                            </field>							
                        
						</group>
					</page>
                </xpath>

            </field>
        </record>


        <record id="view_dms_file_revision_history_form" model="ir.ui.view">
            <field name="name">kw_dms_file_revision_history.form</field>
            <field name="model">kw_dms.file_revision_history</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>                       
                        <group>
                            <group>
                                <field name="name" />
                                <field name="directory" />
                                <field name="content" filename="name"/>
                                <field name="extension" />                         
                            </group>
                            <group>
                                <field name="path_names" />
                                <field name="storage" />                               
                                <field name="size" />
                                <field name="version" />                               
                            </group>
                        </group>

                    </sheet>
                </form> 
            </field>
        </record>

   

</odoo>