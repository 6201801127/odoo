<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data noupdate="0">
        <record id="view_dms_directory_form_inherit" model="ir.ui.view">
            <field name="name">kw_dms_directory.form inherit</field>
            <field name="model">kw_dms.directory</field>
            <field name="inherit_id" ref="kw_dms.view_dms_directory_form"/>
            <field name="arch" type="xml">

                 <xpath expr="//header" position="inside">                                             
                    <field name="count_total_files" invisible="1" readonly="1"/>
                    <button class="oe_highlight"  attrs="{'invisible':[('count_total_files', '=', 0)]}" name="action_download_directory" type="object" string="Download Directory"  icon="fa-file-zip-o" />

                </xpath>

                <!-- <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                   
                    <button name="action_show_download_log" type="object"   class="oe_stat_button" icon="fa-download">
                    	<field name="download_count" readonly="1" string="Downloads" widget="statinfo"/>  
                    </button>

                </xpath> -->

            </field>
        </record>



        <record id="view_dms_download_log_directory_kanban" model="ir.ui.view">
            <field name="name">kw_dms_download_log_directory.kanban</field>
            <field name="model">kw_dms.directory</field>
            <field name="inherit_id" ref="kw_dms.view_dms_directory_kanban" />
            <field name="arch" type="xml">
              
               
                <xpath expr="//kanban/templates/t/div/div[1]/div/div[1]/div[2] " position="inside">


                    <a type="object" name="action_download_directory"   role="menuitem" class="dropdown-item">
                        <i class="fa fa-file-zip-o" /> Download
                    </a>

                </xpath>            

            </field>

        </record>


    </data>     

</odoo>