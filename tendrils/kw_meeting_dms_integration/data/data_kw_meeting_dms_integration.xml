<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="kwdms_meeting_doc_storage" model="kw_dms.storage">
            <field name="name">Meeting</field>
            <field name="save_type">file</field>
            <field name="activate_revision">True</field>
            <field name="activate_versioning">True</field>
        </record>

        <record id="kwdms_meeting_doc_read_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Meeting Docs Folder Read Access Group</field>  
            <field name="perm_read">True</field> 
            <field name="groups" eval="[
                        (4, ref('kw_meeting_schedule.group_kw_meeting_schedule_manager')),
                        (4, ref('kw_meeting_schedule.group_kw_meeting_schedule_user')),
                        (4, ref('base.group_user'))]"/>
        </record>

        <record id="kwdms_meeting_doc_all_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Meeting Docs Folder All Access Group</field>  
            <field name="perm_create">True</field>          
            <field name="perm_read">True</field>  
            <field name="perm_write">True</field>          
            <field name="perm_unlink">True</field>  
            <field name="groups" eval="[(4, ref('kw_meeting_schedule.group_kw_meeting_schedule_manager'))]"/>
        </record>       
       
        <record id="schedule_meeting_doc_directory" model="kw_dms.directory">
            <field name="name">Meeting Docs</field>  
            <field name="is_root_directory">True</field>
            <field name="root_storage" ref="kwdms_meeting_doc_storage"/>
            <field name="groups" eval="[(4, ref('kw_dms.kwdms_all_access_admin_grp')), (4, ref('kw_meeting_dms_integration.kwdms_meeting_doc_all_access_grp')), (4, ref('kw_meeting_dms_integration.kwdms_meeting_doc_read_access_grp'))]"/>
        </record>        
       

        <!--Default Config Setting for categories -->

         <!-- activate categories by default -->
        <function model="ir.config_parameter" name="set_param" eval="('kw_dms.meeting_doc_folder', ref('kw_meeting_dms_integration.schedule_meeting_doc_directory'))"/>
       
    </data>
</odoo>
