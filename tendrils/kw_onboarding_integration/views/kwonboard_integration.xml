                    </div>
                </xpath> -->
            </field>
        </record>
        <record id="onboarding_kwonboard_enrollment_form_view_inherit" model="ir.ui.view">
			<field name="name">Onboarding Enrollment Form View Inherit</field>
			<field name="model">kwonboard_enrollment</field>
            <field name="inherit_id" ref="kw_onboarding.kwonboard_enrollment_view_form"/>
			<field name="arch" type="xml">
                
                <field name="tmp_location" position="after">
                    <field name="infra_unit_loc_id"  options="{'no_open': True,'no_create':True,'no_edit':True}"
                    attrs="{'invisible':[('tmp_location','!=','offsite')]}"  domain="[('branch_id','=',tmp_worklocation_id)]" />
                    <field name="infra_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                        attrs="{'invisible':[('tmp_location','!=','offsite')]}"  domain="[('address_id','=',tmp_worklocation_id)]"/>
                    <field name="work_station_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                        attrs="{'invisible':['|', ('infra_id','=', False),('tmp_location','!=','offsite')]}" domain="[('infrastructure','=',infra_id)]"/>
                </field>

                <field name="tmp_enable_attendance" position="after" >
                  <field name="atten_mode_ids" widget="many2many_tags" 
                    options="{'color_field': 'color','no_open': True,'no_create':True,'no_edit':True}" 
                    attrs="{'invisible':[('tmp_enable_attendance','!=','yes')], 'required': [('tmp_enable_attendance','=','yes')]}"/>
                </field>

            </field>
        </record>

    </data>
</odoo>