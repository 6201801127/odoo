        <record id="employee_form_view_inherit" model="ir.ui.view">
            <field name="name">Employee Form View Inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="kw_employee.kw_empl_form_view"/>
            <field name="arch" type="xml">
                
                <field name="location" position="after">
                    <field name="infra_unit_loc_id" groups="hr.group_hr_manager" options="{'no_open': True,'no_create':True,'no_edit':True}"
                        attrs="{'invisible':[('location','!=','offsite')]}" domain="[('branch_id','=',job_branch_id)]"/>
                    <field name="infra_id" groups="hr.group_hr_manager" options="{'no_open': True,'no_create':True,'no_edit':True}"
                        attrs="{'invisible':[('location','!=','offsite')]}" domain="[('address_id','=',job_branch_id)]"/>
                    <field name="workstation_id" groups="hr.group_hr_manager" options="{'no_open': True,'no_create':True,'no_edit':True}"
                        attrs="{'invisible':['|', ('infra_id','=', False),('location','!=','offsite')]}" domain="[('infrastructure','=',infra_id)]"/>
                </field>

            </field>
        </record>

        <record id="onboarding_checklist_form_view_inherit" model="ir.ui.view">
            <field name="name">Post Onboarding Checklist Form View Inherit</field>
            <field name="model">kw_employee_onboarding_checklist</field>
            <field name="inherit_id" ref="kw_employee.kw_employee_onboarding_checklist_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_1']" position="after">
                    <group name="group_2">
                        <div class="content-group1">
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="accident_policy"/>
                                <span><field name="accident_policy" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="health_insurance"/>
                                <span><field name="health_insurance" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="health_self" attrs="{'invisible':[('health_insurance','!=','yes')]}"/>
                                <span><field name="health_self" attrs="{'invisible':[('health_insurance','!=','yes')]}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="health_dependants" attrs="{'invisible':[('health_insurance','!=','yes')]}"/>
                                <span><field name="health_dependants" attrs="{ 'invisible':[('health_insurance','!=','yes')]}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="dependantsinfo_ids" attrs="{'invisible':[('health_dependants','=',False)]}"/>
                                <span><field name="dependantsinfo_ids" attrs="{'invisible':[('health_dependants','=',False)]}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="work_station"/>
                                <span><field name="work_station" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="location" attrs="{'invisible':[('work_station','!=','yes')]}"/>
                                <span name="location_wrapper"><field name="location" widget="radio" attrs="{'invisible':[('work_station','!=','yes')]}" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label for="infra_id" class="font-weight-bold col-md-2" attrs="{'invisible':[('location','!=','offsite')]}"/>
                                <span><field name="infra_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                    attrs="{'invisible':[('location','!=','offsite')]}"/></span>
                            </div>
                            <div class="row">
                                <label for="workstation_id" class="font-weight-bold col-md-2" attrs="{'invisible':['|', ('infra_id','=', False),('location','!=','offsite')]}"/>
                                <span><field name="workstation_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                attrs="{'invisible':['|', ('infra_id','=', False),('location','!=','offsite')]}"/></span>
                            </div>
                            <div class="row">
                                <label for="client_location" class="font-weight-bold col-md-2" attrs="{'invisible':[('location','!=','onsite')]}"/>
                                <span><field name="client_location" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'invisible':[('location','!=','onsite')], 'required':[('location','=','onsite')]}"/></span>
                            </div>
                            <div class="row">
                                <label for="wfa_city" class="font-weight-bold col-md-2" attrs="{'invisible':[('location','!=','wfa')]}"/>
                                <span><field name="wfa_city" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'invisible':[('location','!=','wfa')], 'required':[('location','=','wfa')]}"/></span>
                            </div>
                        </div>
                    </group>
                </xpath>

