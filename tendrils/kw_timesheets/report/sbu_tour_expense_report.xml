<odoo>
    <data>
        <!-- Tree view for tour sbu expense Report "model" -->
        <record id="view_kw_sbu_tour_expense_report_tree" model="ir.ui.view">
            <field name="name">view_kw_sbu_tour_expense_report_tree</field>
            <field name="model">kw_sbu_tour_expense_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="SBU Tour Expense Report Tree" create="false" edit="false" delete="false" import="false">
                    <field name="year"/>
                    <field name="month_name"/>
                    <field name="sbu_name"/>
                    <!-- <field name="no_of_employee"/> -->
                    <field name="sbu_id" invisible='1'/>
                    <field name="total_expense" sum="total_expense"/>
                </tree>
            </field>
        </record>



        <record id="kw_sbu_tour_expense_report_search" model="ir.ui.view">
            <field name="name">kw_sbu_tour_expense_report.search</field>
            <field name="model">kw_sbu_tour_expense_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="year" />
                    <field name="month_name" />
                    <field name="sbu_name"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_year" string="Year" domain="" context="{'group_by':'year'}"/>
                        <!-- <filter name="group_by_month" string="Month" domain="" context="{'group_by':'month'}"/> -->
                        <filter name="sbu_name" string="SBU Name" domain="" context="{'group_by':'sbu_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Main window action for tour sbu expense Report "model" -->
        <record id="action_kw_sbu_tour_expense_report_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">SBU Tour Expense Report</field>
            <field name="res_model">kw_sbu_tour_expense_report</field>
            <field name="view_mode">tree,search</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_group_by_year':1}</field>
            <field name="domain">[]</field>
        </record>


        <menuitem name="SBU Tour Expense Report" action="action_kw_sbu_tour_expense_report_window"
                  id="sbu_tour_expense_report_menu" parent="hr_timesheet.menu_timesheets_reports"
                  sequence="500"/>

    </data>
</odoo>