<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_timesheet_el_deduct_report_tree" model="ir.ui.view">
            <field name="name">view_kw_timesheet_el_deduct_report_tree</field>
            <field name="model">timesheet_el_deduct_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Timesheet EL Deduct Report Tree" create="false" edit="false" delete="false" import="false">
                    <field name="create_date" string="Created On"/>
                    <field name="create_uid" string="Created By"/>
                    <field name="attendance_year" invisible="1"/>
                    <field name="attendance_month" />
                    <field name="emp_code" />
                    <field name="employee" />
                    <field name="designation" />
                    <field name="department_id" />
                    <field name="division"/>
                    <field name="parent_id" />
                    <field name="working_days" />
                    <field name="absent_days" />
                    <field name="on_tour_days" />
                    <field name="on_leave_days" />
                    <field name="per_day_effort" groups="base.group_no_one"/>
                    <field name="required_effort_char" />
                    <field name="actual_effort_char" />
                    <field name="total_effort_char"/>
                    <field name="total_effort_percent"/>
                    <field name="required_effort_day" invisible="1"/>
                    <field name="num_actual_effort_day"/>
                    <field name="total_effort_day"/>
                    <field name="timesheet_el_days"/>
                    <field name="timesheet_paycut_days"/>
                </tree>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_kw_timesheet_el_deduct_report_search" model="ir.ui.view">
            <field name="name">view.kw_timesheet_payroll_report.search</field>
            <field name="model">timesheet_el_deduct_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="Search Employee">
                    <field name="employee"  string="Employee"/>
                    <field name="designation" />
                    <field name="department_id" />
                    <field name="division" />
                    <field name="attendance_month"/>
                    <field name="attendance_year"/>
                    <field name="timesheet_el_days"/>
                    <field name="timesheet_paycut_days"/>
                    <filter string="This Year" domain="[('attendance_year', '=',context_today().strftime('%Y'))]" name="current_year_attendance"/>
                    <filter string="Last Year" domain="[('attendance_year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_attendance"/>
                    <separator/>
                    <filter string="This Month" domain="[('attendance_month', 'like',context_today().strftime('%m'))]" name="this_month_report"/>
                    <filter string="Last Month" domain="[('attendance_month', 'like',(context_today()-relativedelta(months=1)).strftime('%m'))]" name="last_month_report"/>
                    <separator/>
                    <filter string="EL Deduct" domain="[('timesheet_el_days', '&gt;', 0)]" name="el_deduct_filter"/>
                    <filter string="Paycut Deduct" domain="[('timesheet_paycut_days', '&gt;', 0)]" name="paycut_deduct_filter"/>
                    <separator />
                    <filter string="January" domain="[('attendance_month','=','01')]" name="january_attendance_"/>
                    <filter string="February" domain="[('attendance_month','=','02')]" name="february_attendance_"/>
                    <filter string="March" domain="[('attendance_month','=','03')]" name="march_attendance_"/>
                    <filter string="April" domain="[('attendance_month','=','04')]" name="april_attendance_"/>
                    <filter string="May" domain="[('attendance_month','=','05')]" name="may_attendance_"/>
                    <filter string="June" domain="[('attendance_month','=','06')]" name="june_attendance_"/>
                    <filter string="July" domain="[('attendance_month','=','07')]" name="july_attendance_"/>
                    <filter string="August" domain="[('attendance_month','=','08')]" name="august_attendance_"/>
                    <filter string="September" domain="[('attendance_month','=','09')]" name="september_attendance_"/>
                    <filter string="October" domain="[('attendance_month','=','10')]" name="october_attendance_"/>
                    <filter string="November" domain="[('attendance_month','=','11')]" name="november_attendance_"/>
                    <filter string="December" domain="[('attendance_month','=','12')]" name="december_attendance_"/>
                </search>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="action_kw_timesheet_el_deduct_report_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Timesheet Payroll Log Report</field>
            <field name="res_model">timesheet_el_deduct_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_this_month_report':1}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem name="Timesheet Payroll Log Report" action="action_kw_timesheet_el_deduct_report_window"
                  id="menu_timesheet_el_deduct_report" parent="parent_menu_timesheet_payroll_report"
                  groups="hr_timesheet.group_timesheet_manager,kw_timesheets.group_kw_timesheets_report_manager"/>
    </data>
</odoo>
