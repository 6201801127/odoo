<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="timesheet_talent_pool_resource_tree" model="ir.ui.view">
            <field name="name">talent_pool_resource.tree</field>
            <field name="model">sbu_bench_resource</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' >
                    <field name="designation"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="job_branch_id"/>
                    <field name="remark" />
                    <field name="primary_skill_id"/>
					<field name="engagement_plan"/>
                    <field name="till_date"/>
                    <field name="future_projection"/>
                    <field name="experience"/>
                </tree>
            </field>
        </record>


        <!-- kw_contract_end_log action window -->
        <record id="timesheet_talent_pool_resource_action" model="ir.actions.act_window">
            <field name="name">Talent Pool Resource Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_bench_resource</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('timesheet_talent_pool_resource_tree')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records to show...
            </p>
        </field>
        </record>

        <menuitem   id="timesheet_talent_pool_sbu_menu" name="Talent Pool Resource Report"  
                    parent="hr_timesheet.menu_timesheets_reports" 
                    action="timesheet_talent_pool_resource_action"
                    groups="group_kw_timesheets_sbu_representative"
                    sequence="100" />
        
    </data>
    </odoo>