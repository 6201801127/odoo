<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_sub_task_report_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="priority" eval="25"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree create='false' edit='false' import='false' delete='false'>
                    <field name="parent_id" string="Activity Name"/>
                    <field name="name" string='Task Name'/>
                    <field name="project_id" />
                    <field name="prject_category_id" />
                    <field name="mapped_to" widget='many2many_tags' string="Department" invisible="1"/>
                    <field name="activity_planning_start_date" string="Actvity Start Date"/>
                    <field name="activity_planning_end_date" string="Actvity End Date"/>
                    <field name="activity_planned_hours" string="Actvity Planned Hours"/>
                    <field name="activity_remaining_hours" string="Actvity Remaining Hours"/>
                    <field name="planning_start_date" string="Task Start Date" />
                    <field name="planning_end_date" string="Task End Date"/>
                    <field name="planned_hours" string="Task Hours"/>
                    <field name="remaining_hours"  string="Task Remaining Hours"/>
                    <field name="tl_employee_id" string="Actvity Team Leader"/>
                    <field name="assigned_employee_id"/>
                    <field name="employee_task_dept"/>
                    <field name="employee_task_designation"/>
                    <field name="task_status" string="Task Status"/>
                    <button name="action_sub_task_details" string="View Details" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="sub_task_report_type_search" model="ir.ui.view">
            <field name="name">activity_type.search</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <search string="Task Type">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="prject_category_id"/>
                    <field name="mapped_to"/>
                    <field name="tl_employee_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter string="Category" name="group_by_project" domain="[]" context="{'group_by':'prject_category_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_sub_task_report_act_window" model="ir.actions.act_window">
            <field name="name">Project Task Report</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('parent_id','!=',False)]</field>
            <field name="search_view_id" ref="sub_task_report_type_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_sub_task_report_tree')})]"/>
        </record>

        <menuitem name="Project Tasks" action="kw_sub_task_report_act_window" id="menu_sub_task_report_act" parent="hr_timesheet.menu_timesheets_reports" groups="hr_timesheet.group_timesheet_manager,kw_timesheets.group_kw_timesheets_report_manager" sequence='99'/>

    </data>
</odoo>
