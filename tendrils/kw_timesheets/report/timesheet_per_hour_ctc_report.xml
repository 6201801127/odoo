<odoo>
    <data>
        <!-- Tree view for tour sbu expense Report "model" -->
        <record id="view_timesheet_per_hour_ctc_cost_report_tree" model="ir.ui.view">
            <field name="name">view_timesheet_per_hour_ctc_cost_report_tree</field>
            <field name="model">timesheet_per_hour_ctc_cost_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="SBU Timesheet CTC Report" create="false" edit="false" delete="false" import="false">
                    <field name="year"/>
                    <field name="month"/>
                    <!-- <field name="month_name" invisible='1'/> -->
                    <field name="sbu_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="employement_type" options="{'no_open': True,'no_create':True,'no_edit':True}" invisible='1'/>
                    <field name="average_ctc"/>
                </tree>
            </field>
        </record>



        <record id="kw_timesheet_per_hour_ctc_cost_report_search" model="ir.ui.view">
            <field name="name">timesheet_per_hour_ctc_cost_report.search</field>
            <field name="model">timesheet_per_hour_ctc_cost_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="year"/>
                    <field name="month_name"/>
                    <field name="sbu_name"/>
                    <field name="employement_type"/>
                     <group expand="0" string="Group By">
                        <filter name="group_by_sbu_name" string="SBU Name" domain="" context="{'group_by':'sbu_name'}"/>
                        <filter name="group_by_year" string="Year" domain="" context="{'group_by':'year'}"/>
                        <!-- <filter name="group_by_month" string="Month" domain="" context="{'group_by':'month_name'}"/> -->
                    </group>
                </search>
            </field>
        </record>

        <!-- Main window action for tour sbu expense Report "model" -->
        <record id="action_timesheet_per_hour_ctc_cost_report_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Horizontal Timesheet CTC Report</field>
            <field name="res_model">timesheet_per_hour_ctc_cost_report</field>
            <field name="view_mode">tree,search</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_group_by_sbu_name':1,'search_default_group_by_year':1}</field>
            <field name="domain">[]</field>
        </record>

    <menuitem id="timesheet_per_hour_ctc_cost_menu"
				  name="Horizontal Timesheet CTC Report"
				  action="action_timesheet_per_hour_ctc_cost_report_window"
                  parent="hr_timesheet.menu_timesheets_reports"
				  sequence="502" 
		/>


       
    </data>
</odoo>