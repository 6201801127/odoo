<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view for "model" -->
        <record id="view_kw_daily_timesheets_report_tree" model="ir.ui.view">
            <field name="name">view.kw_daily_timesheets_report.tree</field>
            <field name="model">kw_daily_timesheets_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" import="false" default_order="date desc">
                    <!-- <field name="date" /> -->
                    <field name="employee_id" />
                    <field name="job_id"/>
                    <field name="department_id" />
                    <field name="division" />
                    <field name="branch_id" string="Location"/>
                    <field name="parent_id"/>
                    <field name="absent_state" />
                    <field name="on_leave_state" />
                    <field name="on_tour_state" />
                    <field name="str_required_effort"/>
                    <field name="str_timesheet_effort" />
                    <field name="str_total_effort" />               
                </tree>
            </field>
        </record>

        <record id="view_kw_daily_timesheets_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_daily_timesheets_report.pivot</field>
            <field name="model">kw_daily_timesheets_report</field>
            <field name="arch" type="xml">
                <pivot>
                   <field name="employee_id" type="row"/>
                   <field name="working_days" type="measure" />
                   <field name="absent_state" type="measure" />
                   <field name="on_leave_state" type="measure" />
                   <field name="on_tour_state" type="measure" />
                   <field name="num_required_effort" type="measure"/>
                   <field name="num_timesheet_effort" type="measure"/>
                   <field name="num_total_effort" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_kw_daily_timesheets_report_search" model="ir.ui.view">
            <field name="name">view.kw_daily_timesheets_report.search</field>
            <field name="model">kw_daily_timesheets_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_timesheet_attendance_report_search">
                    <field name="employee_id" string="Employee" />
                    <field name="job_id" string="Employee" />
                    <field name="branch_id" string="Branch"/>
                    <field name="department_id" string="Department" />
                    <filter string="Date" name="filter_date" date="date"/>
                    <!-- <filter string="This Year" domain="[('date', 'like',context_today().strftime('%Y'))]" name="current_year_timesheet"/>
                    <filter string="Last Year" domain="[('date', 'like',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_timesheet"/>   -->
                    <separator/>
                    <filter string="This Month" domain="[('date', 'like',context_today().strftime('%Y-%m'))]" name="this_month_timesheet"/>
                    <filter string="Last Month" name="filter_last_month" domain="[('date', '&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('date','&lt;',(context_today()).strftime('%Y-%m-01'))]" />
                    <separator/>
                    <filter string="January" domain="[('month_number','=',1)]" name="january_timesheet"/>
                    <filter string="February" domain="[('month_number','=',2)]" name="february_timesheet"/>
                    <filter string="March" domain="[('month_number','=',3)]" name="march_timesheet"/>
                    <filter string="April" domain="[('month_number','=',4)]" name="april_timesheet"/>
                    <filter string="May" domain="[('month_number','=',5)]" name="may_timesheet"/>
                    <filter string="June" domain="[('month_number','=',6)]" name="june_timesheet"/>
                    <filter string="July" domain="[('month_number','=',7)]" name="july_timesheet"/>
                    <filter string="August" domain="[('month_number','=',8)]" name="august_timesheet"/>
                    <filter string="September" domain="[('month_number','=',9)]" name="september_timesheet"/>
                    <filter string="October" domain="[('month_number','=',10)]" name="october_timesheet"/>
                    <filter string="November" domain="[('month_number','=',11)]" name="november_timesheet"/>
                    <filter string="December" domain="[('month_number','=',12)]" name="december_timesheet"/>  
                    <separator/>
                    <filter name="my_and_sub_ordinate_productive" string="My &amp; Sub-Ordinates" domain="['|',('employee_id.user_id','=',uid),('employee_id.parent_id.user_id','=',uid)]" />
                    <group>
                        <!-- <filter name="group_by_employee_id" string="Employee" context="{'group_by':'employee_id'}" /> 
                        <filter name="group_by_branch_id" string="Branch" context="{'group_by':'branch_id'}" /> -->
                        <filter name="group_by_department" string="Department" context="{'group_by':'department_id'}" />
                        <filter name="group_by_parent_id" string="Reporting Authority" context="{'group_by':'parent_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="kw_daily_timesheets_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Daily Timesheet Report</field>
            <field name="res_model">kw_daily_timesheets_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_this_month_timesheet':1,'search_default_my_and_sub_ordinate_productive':1}</field>
            <field name="search_view_id" ref="view_kw_daily_timesheets_report_search"/>
        </record>

        <!-- <record id="menu_kw_daily_timesheets_report" model="ir.ui.menu">
            <field name="name">Daily Timesheet Report</field>
            <field name="action" ref="kw_daily_timesheets_report_act_window"/>
            <field name="parent_id" ref="hr_timesheet.menu_timesheets_reports"/>
            <field name="groups_id" eval="[[6,0,[ref('kw_timesheets.group_kw_timesheets_report_manager'),ref('hr_timesheet.group_timesheet_manager')]]]"/>
        </record> -->
       
    </data>
</odoo>
