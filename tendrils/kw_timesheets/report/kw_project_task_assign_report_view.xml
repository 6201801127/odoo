<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view for "model" -->
        <record id="kw_project_task_assign_report_tree" model="ir.ui.view">
            <field name="name">view_kw_project_task_assign_report_tree</field>
            <field name="model">kw_project_task_assign_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" import="false" >
                    <field name="sbu_name" />
                    <field name="project_code" />
                    <field name="project_name" />
                    <field name="project_manager" /> 
                    <field name="vertical_resource_tagged" class="vertical_data"  sum="Total" />
                    <!-- <field name="vertical_resource_tagged_count" class="vertical_data" /> -->
                    <field name="v_assigned" class="vertical_data" sum="Vertical Assigned Total"/>
                    <!-- <field name="actual_vertical_resource_tagged" class="vertical_data" invisible="1" /> -->
                    <field name="v_not_assigned" class="vertical_data" sum="Vertical not Assigned Total"/>
                    <button name="get_vertical_data" type="object" icon="fa-list" class="oe_highlight"/>
                    <field name="horizontal_resource_tagged" class="horizontal_data" sum="Total"/>
                    <field name="h_assigned" class="horizontal_data" sum="Horizontal Assigned Total"/>
                    <!-- <field name="actual_horizontal_resource_tagged" class="horizontal_data" invisible="1" /> -->
                    <field name="h_not_assigned" class="horizontal_data" sum="Horizontal not Assigned Total"/>
                    <button name="get_horizontal_data" icon="fa-list" type="object" class="oe_highlight"/>
                </tree>
            </field>
        </record>
        
        <record id="kw_project_task_assign_report_search" model="ir.ui.view">
            <field name="name">view_kw_project_task_assign_report_search</field>
            <field name="model">kw_project_task_assign_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_project_task_assign_report_search">
                    <field name="sbu_name" />
                    <field name="project_manager" />
                    <field name="project_code" />
                    <field name="project_name" />
                    <group>
                        <filter name="group_by_project_id" string="Project" context="{'group_by':'project_id'}"/>
                        <filter name="group_by_sbu" string="SBU" context="{'group_by':'sbu_name'}"/>
                    </group>
                  
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="kw_project_task_assign_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project Task Assign Report</field>
            <field name="res_model">kw_project_task_assign_report</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
        </record>

        <record id="employee_list_panel" model="ir.ui.view">
            <field name="name">kw_project_task_assign_report.list.panel</field>
            <field name="model">kw_project_task_assign_report</field>
            <field name="inherit_id" ref="kw_timesheets.kw_project_task_assign_report_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="banner_route">
                        /timesheet/task_assign_panel
                    </attribute>
                </xpath>
            </field>
        </record>
        
        
        <!-- <menuitem name="Project Task Assign Report"
                  action="kw_project_task_assign_report_act_window"
                  id="menu_kw_project_task_assign_report"
                  parent="hr_timesheet.menu_timesheets_reports"
                  groups='kw_timesheets.group_kw_timesheets_report_manager,hr_timesheet.group_timesheet_manager'
                 /> -->

    <template id="task_assign_template" name="employee.panel.template">
        <div class="row" style="margin: 10px;">
            <table class="table table-bordered" style="width:35%;">
                <thead>
                    <tr>
                        <td class="text-center" style="width:50%;font-weight: bold;">
                            <div>Total Horizontal Employees</div>
                        </td>
                        <td class="text-center" style="background-color:#108fbb;width:50%;color:#FFFFFF;font-weight: bold;" >
                           <t t-esc="values['total_horizonatal']"/>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center" style="width:50%;font-weight: bold;">
                            <div>Total Vertical Employees</div>
                        </td>
                        <td class="text-center" style="background-color:#108fbb;color:#FFFFFF;font-weight: bold;">
                            <t t-esc="values['total_vertical']"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    </template>
    </data>
</odoo>
