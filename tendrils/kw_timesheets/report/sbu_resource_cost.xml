<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sbu_resource_cost_report_report_tree" model="ir.ui.view">
			<field name="name">sbu_resource_cost_report tree</field>
			<field name="model">sbu_resource_cost_report</field>
			<field name="arch" type="xml">
				<tree create='false' delete='false' edit='false'>
					<field name="year"/>
					<field name="month_name" />
					<field name="emp_type"/>
					<field name="sbu_id" invisible='1'/>
					<field name="sbu_name"/>
					<field name="ctc" sum='Total'/>
										
				</tree>
			</field>
		</record>
		<record id="sbu_resource_cost_report_report_search" model="ir.ui.view">
			<field name="name">sbu_resource_cost_report Search</field>
			<field name="model">sbu_resource_cost_report</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<field name="year"/>
					<field name="month_name" />
					<field name="emp_type"/>
					<field name="sbu_name"/>
					<field name="ctc" />
					<group expand="0" string="Group By">
						<filter name="sbu_name_group" string="SBU"  context="{'group_by':'sbu_name'}"/>
						<filter name="employement_group" string="Employement"  context="{'group_by':'emp_type'}"/>
					</group>
				</search>
			</field>
		</record>
		<record id="sbu_resource_cost_report_report_action" model="ir.actions.act_window">
			<field name="name">SBU Resource Cost Report</field>
			<field name="res_model">sbu_resource_cost_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
            <field name="context">{'search_default_employement_group':1,'search_default_sbu_name_group':1}</field>
            <field name="domain">[]</field>
			
			
		</record>
		<menuitem id="sbu_resource_cost_report_report_menu"
				  name="SBU Resource Cost Report"
				  action="sbu_resource_cost_report_report_action"
                  parent="hr_timesheet.menu_timesheets_reports"
				  sequence="501" 
		/>

	</data>
</odoo>