<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="timesheet_unit_bench_resource_tree" model="ir.ui.view">
            <field name="name">unit_bench_resource.tree</field>
            <field name="model">unit_bench_resource</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' decoration-danger="applied_eos == True">
                    <!-- <field name="id" string="Sl.No"/> -->
                    <field name="name"/>
                    <field name="code"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="designation"/>
                    <field name="department_id"/>
                    <field name="sbu_type" />
                    <field name="sbu_id" invisible='1'/>
					<field name="sbu_name"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type"/>
                    <field name="job_branch_id"/>
                    <field name="applied_eos" invisible='1'/>
                    <field name="category_kw_id" invisible='1'/>
                    <field name="resource_id" invisible='1'/>
                    <field name="days_in_bench"  invisible='1'/>
                    <field name="interval_day"/>
                    <field name="suggestion" widget="dynamic_popover_text"/>
                    <button name="action_button_release" type="object" string="Release" class="btn-danger"/>
                </tree>
            </field>
        </record>


        <!-- kw_contract_end_log action window -->
        <record id="timesheet_unit_bench_resource_action" model="ir.actions.act_window">
            <field name="name">Unit (SBU) Bench Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">unit_bench_resource</field>
            <field name="view_mode">tree</field>
            <field name="domain">['|','|','|','|',('sbu_id.representative_id.user_id','=',uid),('sbu_id.representative_id.parent_id.user_id','=',uid),('sbu_id.employee_id.parent_id.user_id','=',uid),('sbu_id.employee_id.parent_id.parent_id.user_id','=',uid),('sbu_id.employee_id.user_id','=',uid)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('timesheet_unit_bench_resource_tree')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records to show...
            </p>
        </field>
        </record>

        <menuitem id="timesheet_unit_bench_sbu_menu" name="Unit (SBU) Bench Report"  parent="hr_timesheet.menu_timesheets_reports" action="timesheet_unit_bench_resource_action" sequence="99" />
        
    </data>
    </odoo>