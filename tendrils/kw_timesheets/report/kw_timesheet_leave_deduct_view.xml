<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_timesheet_leave_deduct_tree" model="ir.ui.view">
            <field name="name">view.kw_timesheet_leave_deduct.tree</field>
            <field name="model">kw_timesheet_leave_deduct</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Timesheet Leave Deduct Tree" editable="top" create="false" >
                    <field name="timesheet_year" readonly='1'/>
                    <field name="timesheet_month" readonly='1'/>
                    <field name="emp_code" readonly='1' />
                    <field name="employee_id" readonly='1'/> 
                    <field name="designation" readonly='1'/>
                    <field name="department_id" readonly='1' />
                    <field name="division" readonly='1'/>
                    <field name="parent_id" readonly='1'/>
                    <field name="timesheet_el_deduct_in_days" readonly='1' />
                    <field name="el_deducted" invisible="1" />
                </tree>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_kw_timesheet_el_deduct_search" model="ir.ui.view">
            <field name="name">view.kw_timesheet_leave_deduct.search</field>
            <field name="model">kw_timesheet_leave_deduct</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_timesheet_leave_deduct">
                    <field name="employee_id" />
                    
                    <group expand="0" string="Group By...">
                        <filter name="el_deducted" string="EL Deducted" domain="[('el_deducted','=',True)]" />
                        <filter name="el_deducted" string="EL Not Deducted" domain="[('el_deducted','=',False)]" />
                    </group>
                    <separator/>
                    <filter string="This Month" name="filter_current_month" domain="[('attendance_month_year', 'like',context_today().strftime('%Y-%m-%'))]" />
                    <filter string="Last Month" domain="[('attendance_month_year','&gt;',(context_today()-relativedelta(months=2)).strftime('%Y-%m-01')),('attendance_month_year','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_attendance"/>
                    <separator/>
                    <filter string="This Year" domain="[('attendance_month_year', 'like',context_today().strftime('%Y'))]" name="current_year_attendance"/>
                    <separator/>
                    <filter string="January" domain="[('timesheet_month','=','01')]" name="january_attendance"/>
                        <filter string="February" domain="[('timesheet_month','=','02')]" name="february_attendance"/>
                        <filter string="March" domain="[('timesheet_month','=','03')]" name="march_attendance"/>
                        <filter string="April" domain="[('timesheet_month','=','04')]" name="april_attendance"/>
                        <filter string="May" domain="[('timesheet_month','=','05')]" name="may_attendance"/>
                        <filter string="June" domain="[('timesheet_month','=','06')]" name="june_attendance"/>
                        <filter string="July" domain="[('timesheet_month','=','07')]" name="july_attendance"/>
                        <filter string="August" domain="[('timesheet_month','=','08')]" name="august_attendance"/>
                        <filter string="September" domain="[('timesheet_month','=','09')]" name="september_attendance"/>
                        <filter string="October" domain="[('timesheet_month','=','10')]" name="october_attendance"/>
                        <filter string="November" domain="[('timesheet_month','=','11')]" name="november_attendance"/>
                        <filter string="December" domain="[('timesheet_month','=','12')]" name="december_attendance"/>
                </search>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="action_kw_timesheet_leave_deduct_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Timesheet Leave Deduct</field>
            <field name="res_model">kw_timesheet_leave_deduct</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_filter_current_month':1,'search_default_current_year_attendance':1}</field>
            <field name="domain">[]</field>
        </record>
        

        <menuitem name="Timesheet EL Deduct" action="action_kw_timesheet_leave_deduct_window"
                    id="menu_timesheet_leave_deduct"  parent="parent_menu_timesheet_payroll_report"
                    groups='hr_timesheet.group_timesheet_manager,kw_timesheets.group_kw_timesheets_report_manager'/>

       
    </data>
</odoo>
