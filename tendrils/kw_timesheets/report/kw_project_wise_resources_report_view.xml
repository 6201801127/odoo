<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view for "model" -->
        <record id="kw_project_resource_report_report_tree" model="ir.ui.view">
            <field name="name">view.kw_project_resource_report.tree</field>
            <field name="model">kw_project_resource_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" import="false" >
                    <field name="project_id" />
                    <field name="employee_code" />
                    <field name="employee_id" />
                    <field name="department"/>
                    <field name="designation" />
                
                </tree>
            </field>
        </record>
        
        <record id="kw_project_resource_report_search" model="ir.ui.view">
            <field name="name">view.kw_project_resource_report.search</field>
            <field name="model">kw_project_resource_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_sbu_tagging_report_search">
                    <field name="project_id" />
                    <field name="employee_id" />
                    <field name="department"/>
                    <field name="designation" />
                    <filter name="groupby_project" string="Project" domain="[]" context="{'group_by':'project_id'}"/>
                    <filter name="groupby_employee" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                </search>
            </field>
        </record>
        
        <record id="kw_project_resource_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_project_resource_report.pivot</field>
            <field name="model">kw_project_resource_report</field>
            <field name="arch" type="xml">
                <pivot string="Project Wise Resource Report">
                    <!-- Add your fields here -->
                    <field name="project_id" type="row" />
                    <field name="employee_id" />
                    <field name="department"/>
                    <field name="designation" />
                </pivot>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="kw_project_resource_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project wise Resources</field>
            <field name="res_model">kw_project_resource_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_groupby_project':1,'search_default_groupby_employee':1}</field>

        </record>

        <!-- <menuitem name="Project wise Resources"
                  action="kw_project_resource_report_act_window"
                  id="menu_kw_project_resource_report"
                  parent="hr_timesheet.menu_timesheets_reports"
                  groups='kw_timesheets.group_kw_timesheets_report_manager,hr_timesheet.group_timesheet_manager'
                 /> -->
       
    </data>
</odoo>
