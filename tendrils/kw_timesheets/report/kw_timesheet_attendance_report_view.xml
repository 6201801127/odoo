<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_timesheet_attendance_report_tree" model="ir.ui.view">
            <field name="name">view.kw_timesheet_attendance_report.tree</field>
            <field name="model">kw_timesheet_attendance_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="kw_timesheet_attendance_report_tree" create="false" edit="false" delete="false" import="false" default_order="attendance_year desc,month_number desc,employee_id asc">
                    <field name="attendance_year"/>
                    <field name="attendance_month"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="branch_id" string="Location"/>
                    <!-- <field name="reporting_authority" /> -->
                    <field name="working_days"/>
                    <field name="required_effort"/>
                    <field name="timesheet_effort"/>
                    <field name="total_effort"/>
                    <button name="view_details_action_button" type="object" string="View Details" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_kw_timesheet_attendance_report_search" model="ir.ui.view">
            <field name="name">view.kw_timesheet_attendance_report.search</field>
            <field name="model">kw_timesheet_attendance_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <search string="kw_timesheet_attendance_report_search">
                    <field name="employee_id" string="Employee"/>
                    <field name="job_id" string="Designation"/>
                    <field name="attendance_year" string="Year"/>
                    <field name="branch_id" string="Branch"/>
                    <field name="department_id" string="Department"/>

                    <filter string="This Year" domain="[('attendance_year', '=',context_today().strftime('%Y'))]" name="current_year_attendance"/>
                    <filter string="Last Year" domain="[('attendance_year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_attendance"/>
                    <separator/>
                    <filter string="This month" domain="[('month_number','=',context_today().strftime('%m')),('attendance_year', '=',context_today().strftime('%Y'))]" name="current_month_total_effort"/>
                    
                    <filter string="January" domain="[('month_number','=',1)]" name="january_attendance"/>
                    <filter string="February" domain="[('month_number','=',2)]" name="february_attendance"/>
                    <filter string="March" domain="[('month_number','=',3)]" name="march_attendance"/>
                    <filter string="April" domain="[('month_number','=',4)]" name="april_attendance"/>
                    <filter string="May" domain="[('month_number','=',5)]" name="may_attendance"/>
                    <filter string="June" domain="[('month_number','=',6)]" name="june_attendance"/>
                    <filter string="July" domain="[('month_number','=',7)]" name="july_attendance"/>
                    <filter string="August" domain="[('month_number','=',8)]" name="august_attendance"/>
                    <filter string="September" domain="[('month_number','=',9)]" name="september_attendance"/>
                    <filter string="October" domain="[('month_number','=',10)]" name="october_attendance"/>
                    <filter string="November" domain="[('month_number','=',11)]" name="november_attendance"/>
                    <filter string="December" domain="[('month_number','=',12)]" name="december_attendance"/>
                    <separator/>
                    <filter name="my_and_sub_ordinate_productive" string="My &amp; Sub-Ordinates" domain="['|',('employee_id.user_id','=',uid),('employee_id.parent_id.user_id','=',uid)]"/>
                    <group>
                        <filter name="group_by_employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="group_by_branch_id" string="Branch" context="{'group_by':'branch_id'}"/>
                        <filter name="group_by_department" string="Department" context="{'group_by':'department_id'}"/>
                        <filter name="group_by_parent_id" string="Reporting Authority" context="{'group_by':'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="action_kw_timesheet_attendance_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Monthly Timesheet Report</field>
            <field name="res_model">kw_timesheet_attendance_report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_current_month_total_effort':1,'search_default_my_and_sub_ordinate_productive':1}</field>
            <field name="search_view_id" ref="view_kw_timesheet_attendance_report_search"/>
        </record>

        <record id="menu_timesheet_productive_report" model="ir.ui.menu">
            <field name="name">Monthly Timesheet Report</field>
            <field name="groups_id" eval="[[6,0,[ref('kw_timesheets.group_kw_timesheets_report_manager'),
                                                 ref('hr_timesheet.group_timesheet_manager')
                                                 ]]]"/>
            <field name="parent_id" ref="hr_timesheet.menu_timesheets_reports"/>
            <field name="action" ref="action_kw_timesheet_attendance_report_act_window"/>
        </record>

    </data>
</odoo>