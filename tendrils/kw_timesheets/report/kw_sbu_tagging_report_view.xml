<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view for "model" -->
        <record id="kw_sbu_tagging_report_report_tree" model="ir.ui.view">
            <field name="name">view.kw_sbu_tagging_report.tree</field>
            <field name="model">kw_sbu_tagging_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" import="false" >
                    <field name="employee_code"/>
                    <field name="employee_name" />
                    <field name="department"/>
                    <field name="designation" />
                    <field name="sbu_name" />
                </tree>
            </field>
        </record>
        
        <record id="kw_sbu_tagging_report_report_search" model="ir.ui.view">
            <field name="name">view.kw_sbu_tagging_report.search</field>
            <field name="model">kw_sbu_tagging_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_sbu_tagging_report_search">
                    <field name="employee_name" />
                    <field name="department"/>
                    <field name="designation" />
                    <field name="sbu_name" />
                    <filter string="Project Tag" name="sbu_tagging_report" domain="[('project_tag_status', '=', True)]" />
                    <filter string="Non-Project Tag" name="non_sbu_tagging_report" domain="[('project_tag_status', '=', False)]" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="kw_sbu_tagging_report_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Resources Tag Status</field>
            <field name="res_model">kw_sbu_tagging_report</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
        </record>

        <menuitem name="Resources Tag Status"
                  action="kw_sbu_tagging_report_report_act_window"
                  id="menu_kw_timesheets_sbu_tag_report"
                  parent="hr_timesheet.menu_timesheets_reports"
                  groups='kw_timesheets.group_kw_timesheets_report_manager,hr_timesheet.group_timesheet_manager'
                 />
       
    </data>
</odoo>
