<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tagged_dept_activity_master_wizard" model="ir.ui.view">
            <field name="name">Department Tagged Wizard</field>
            <field name="model">tagged_dept_activity_master</field>
            <field name="arch" type="xml">
                <form>
                    <!-- $(".modal-footer").hide(); -->
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="dept_tagged" widget='many2many_tags'/>
                            </group>
                        <footer class="text-center">
                            <button name="action_tag_department" type="object" class="btn-success mr-2">Tag Department(s)</button>
                            <button name="action_untag_department" type="object" class="btn-success mr-2">Un-tag Department(s)</button>
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                        </footer>
                    </div>
                </div>
            </form>
        </field>
    </record>
