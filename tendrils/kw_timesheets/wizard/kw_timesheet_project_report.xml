<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="timesheet_project_report_id" model="ir.ui.view">
			<field name="name">Timesheet Project Report Form</field>
			<field name="model">timesheet_project_report_wizard</field>
			<field name="arch" type="xml">
				<form>
					<div>
						<group>
							<field name="select_type" widget="radio" options="{'horizontal': true}"/>
							<field name="year" attrs="{'invisible':[('select_type','!=','month')],'required':[('select_type','=','month')]}"/>
							<field name="month" attrs="{'invisible':[('select_type','!=','month')],'required':[('select_type','=','month')]}"/>
							<field name="date" autocomplete="off" attrs="{'invisible':[('select_type','!=','date')],'required':[('select_type','=','date')]}"/>
							<field name="from_date" autocomplete="off" attrs="{'invisible':[('select_type','!=','week')],'required':[('select_type','=','week')]}"/>
							<field name="to_date"  autocomplete="off" attrs="{'invisible':[('select_type','!=','week')],'required':[('select_type','=','week')]}"/>

						</group>
					</div>
					<footer>
						<button string='View Report' name="view_report" type="object"
								class="btn font-weight-bold text-white" style="background-color: #108fbb;"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="timesheet_project_report_wizard_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Timesheet Fill Report</field>
			<field name="res_model">timesheet_project_report_wizard</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>

				<menuitem name="Timesheet Fill Report"
						  sequence="100"
						  action="timesheet_project_report_wizard_action"
						  id="timesheet_project_report_menu"
						  parent="hr_timesheet.menu_timesheets_reports"
						  groups='kw_timesheets.group_kw_timesheets_report_manager,hr_timesheet.group_timesheet_manager'
				/>


