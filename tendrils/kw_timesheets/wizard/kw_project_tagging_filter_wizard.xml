<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="project_tagging_filter_wizard_form" model="ir.ui.view">
			<field name="name">project_tagging_filter_wizard form</field>
			<field name="model">project_tagging_filter_wizard</field>
			<field name="arch" type="xml">
				<form>
					<div>
                        <group>
                            <group>
                                <field name="from_date"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                            </group>
                        </group>
					</div>
					<footer>
						<button string='Filter' name="project_mapping_filter" type="object"
						        class="btn font-weight-bold text-white" style="background-color: #108fbb;"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="project_tagging_filter_wizard_actions" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Project Tagging Filter</field>
			<field name="res_model">project_tagging_filter_wizard</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>

		<!-- <menuitem id="project_tagging_report_menu"
		          name="Timesheet Project Tag Report"
		          parent="hr_timesheet.menu_timesheets_reports"
                  groups='kw_timesheets.group_kw_timesheets_report_manager'
		          action="project_tagging_filter_wizard_actions"/> -->
	</data>
</odoo>
