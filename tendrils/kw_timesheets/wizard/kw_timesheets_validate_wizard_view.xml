<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="timesheet_validate_view_form" model="ir.ui.view">
        <field name="name">kw_timesheets_validate_wizard.form</field>
        <field name="model">kw_timesheets_validate_wizard</field>
        <field name="arch" type="xml">
            <form string="Validate Timesheets">
                <group>
                    <field name="remark" string='Remark' required='1'/>
                </group>     
                <footer class="text-center">
                    <button type="object" string="Validate" name="action_approve_timesheets" class="btn-primary"/>
                    <button type="object" string="Reject" name="action_reject_timesheets" class="btn-danger"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_timesheet_validate_wizard_window"
                name="Validate Timesheet"
                src_model="account.analytic.line"
                res_model="kw_timesheets_validate_wizard"
                view_type="form"
                view_mode="form"
                view_id="timesheet_validate_view_form"
                key2="client_action_multi"
                target="new"/>

</odoo>
