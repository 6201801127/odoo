<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_timesheet_task_not_assigned_mail_template" model="mail.template">
            <field name="name">Task Not assigned Reminder email template For Project Manger</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Task Not Assigned | ${ctx['project_name']} | Reminder!</field>
            <field name="email_to">${ctx['email_to']}</field>
             <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="kw_timesheets.model_kw_project_task_not_assign_mail"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Dear ${ctx['manager']},
                                        </span>
                                    </h5>

                                    <p style="color: #676767;line-height: 145%;font-size: 16px;">
                                        Task assignment of below resources tagged to :-${ctx['project_name']} is pending for : ${ctx['date']}.
                                    </p>
                                        
                                        <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                             <tr>
                                                 <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Employee Code</th>
                                                 <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name</th>
                                                 <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Designation</th>
                                                 <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Employee Category</th>
                                                 <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department Name</th>
                                            </tr>
                                            %for rec in ctx['data']:
                                            <tr>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${rec['emp_code']}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${rec['name']}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${rec['designation']}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${rec['category']}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${rec['department']}
                                                </td>
                                            </tr>
                                            % endfor
                                        </table>
                                  

                                   
                                   
                                </div>
                            </td>
                        </tr>
                    </table>  
                ]]>
            </field>
        </record>
    </data>
</odoo>