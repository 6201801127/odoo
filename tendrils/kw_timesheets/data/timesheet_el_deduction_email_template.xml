<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="timesheet_el_deduction_mail" model="mail.template">
            <field name="name">Timesheet Leave Deduction</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">EL Deduction due to Deficit in Timesheet Effort | ${(ctx['db_month'])}-${(ctx['db_year'])}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="model_id" ref="kw_timesheets.model_kw_timesheet_leave_deduct"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                         ${object.employee_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Your ${ctx['timesheet_deducted']} days of EL has been deducted due to deficit in timesheet effort for ${(ctx['db_month'])}-${(ctx['db_year'])}.
                                        Please find below the summary of your timesheet efforts for ${(ctx['db_month'])}-${(ctx['db_year'])} and implication in payroll.                                        
                                    </p>
                                    <br/>
                                    <p style="color: #676767;line-height: 145%;font-size: 16px;">
                                        <u>
                                            <b>
                                                Summary of Timesheet Efforts:
                                            </b>
                                        </u>
                                    </p>
                                    <table border="1" cellpadding="5" cellspacing="0" style="width:60%;border-collapse: collapse;font-size: 16px; margin-left:1em;">
                                        <tr>
                                            <td style="height: 30px;width:50%; font-weight:700;color:#676767;text-align:left;">Required Efforts</td>
                                            <td style="color:#676767;height: 34px;width:50%;" >
                                                ${ctx['required_effort_hour']} hrs
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="height: 30px;width:50%; font-weight:700;color:#676767;text-align:left;">
                                                Actual Efforts
                                            </td>
                                            <td style="color:#676767;height: 34px;width:50%;" >
                                                ${ctx['num_actual_effort']} hrs
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="height: 30px;width:50%; font-weight:700;color:#676767;text-align:left;">
                                                Deficit Efforts
                                            </td>

                                            <td style="color:#676767;height: 34px;width:50%;" >
                                                ${ctx['total_effort_hr']} hrs
                                            </td>
                                        </tr>

                                    </table>
                                    <p style="color: #676767;line-height: 145%;font-size: 16px;">
                                        <u>
                                            <b>
                                                Implication in Payroll:
                                            </b>
                                        </u>
                                    </p>
                                    <table border="1" cellpadding="5" cellspacing="0" style="width:60%;border-collapse: collapse;font-size: 16px; margin-left:1em;">
                                        <tr>
                                            <td style="height: 30px;width:50%; font-weight:700;color:#676767;text-align:left;">
                                                EL Deduction
                                            </td>
                                            <td style="color:#676767;height: 34px;width:50%;" >
                                                ${ctx['timesheet_el_days']} days
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="height: 30px;width:50%; font-weight:700;color:#676767;text-align:left;">
                                                Paycut(LWOP)
                                            </td>
                                            <td style="color:#676767;height: 34px;width:50%;" >
                                                ${ctx['timesheet_paycut_days']} days
                                            </td>
                                        </tr>
                                    </table>


                                    <br/>
                                    <hr width="100%" style="background-color:rgb(256,256,256);border:medium none;border-top: 2px dashed rgb(204,204,204);clear:both;display:block; margin: 16px 0px 16px 0px;"/>

                                    <br/>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>