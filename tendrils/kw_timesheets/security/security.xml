        <!-- start : Record Rules -->
        <!-- start : for account_analytic_line model -->
        <record id="kw_account_analytic_line_manager_report_manager_rule" model="ir.rule">
            <field name="name">Timesheet : Manager and Report Manager Access All Timesheets</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6,0,[ref('hr_timesheet.group_timesheet_manager'),ref('kw_timesheets.group_kw_timesheets_report_manager')])]"/>
        </record>
        
        <record id="kw_account_analytic_line_sbu_representative_rule" model="ir.rule">
            <field name="name">Timesheet : SBU Representative View Timesheets of his SBUs'</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="domain_force">[('project_id.sbu_id.representative_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('kw_timesheets.group_kw_timesheets_sbu_representative')])]"/>
        </record>
        
        <record id="kw_account_analytic_line_user_rule" model="ir.rule">
            <field name="name">Timesheet : User Access Own , Subordinates, Own Projects , and Project Managers Timesheet(if in project reviewer)</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="domain_force">['|','|','|','|',
              ('employee_id.user_id','=',user.id),
              ('employee_id','child_of',user.employee_ids.ids),
              ('project_id.emp_id.user_id','=',user.id),
              '&amp;',('project_id.reviewer_id.user_id','=',user.id),('employee_id','in',user.related_pm_ids.ids),
              ('task_id.tl_employee_id.user_id', '=', user.id)
              ]</field>
            <field name="groups" eval="[(6,0,[ref('hr_timesheet.group_hr_timesheet_user')])]"/>
        </record>
        <!-- end : for account_analytic_line model -->

        <record id="kw_timesheets_productive_report_all_access" model="ir.rule">
            <field name="name">Timesheet Manager and Report Manager: No Limit</field>
            <field name="model_id" ref="model_kw_timesheet_attendance_report"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6,0,[ref('hr_timesheet.group_timesheet_manager'),ref('kw_timesheets.group_kw_timesheets_report_manager')])]"/>
        </record>

        <record id="kw_timesheets_productive_report_child_of_access" model="ir.rule">
            <field name="name">Global : Subordinate Hierarchy Only for Query Report</field>
            <field name="model_id" ref="model_kw_subordinates_timesheet_report"/>
            <field name="domain_force">[('employee_id','child_of',user.employee_ids.ids)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4,ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>
