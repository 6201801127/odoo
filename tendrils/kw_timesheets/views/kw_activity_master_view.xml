<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_activity_master_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="prject_category_id" required='1' options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                                <field name="project_id" required='1' options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                                <field name="name" string='Activity Name'/>
                                <field name="mapped_to" required='1' options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" widget='many2many_tags'/>
                                <field name="planning_start_date"/>
                                <field name="planning_end_date"/>
                                <field name="tl_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                                <field name="parent_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                                <field name="task_status"/>
                                <!-- <field name="user_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/> -->
                                <field name="assigned_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                                <field name="planned_hours" string="Planning Hour"/>
<!--                                <field name="planning_hour"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_activity_master_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="priority" eval="25"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name" string='Task Name'/>
                    <field name="project_id" />
                    <field name="module_id" />
                    <field name="prject_category_id" />
                    <field name="mapped_to" widget='many2many_tags' string="Department"/>
                    <field name="planning_start_date"/>
                    <field name="planning_end_date"/>
                    <field name="tl_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                    <field name="parent_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                    <field name="assigned_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                    <!-- <field name="user_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/> -->
                    <field name="task_status"/>
                    <field name="planned_hours" string="Planning Hour"/>
<!--                    <field name="planning_hour"/>-->
                    <field name="remaining_hours"/>
                </tree>
            </field>
        </record>

        <record id="activity_type_search" model="ir.ui.view">
            <field name="name">activity_type.search</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <search string="Activity Type">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="module_id" />
                    <field name="prject_category_id"/>
                    <field name="mapped_to"/>
                    <!-- <field name="planning_start_date"/>
                    <field name="planning_end_date"/> -->
                    <field name="tl_employee_id"/>
                    <field name="planned_hours" string="Planning Hour"/>
<!--                    <field name="planning_hour"/>-->
                    <group expand="1" string="Group By">
                        <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter string="Category" name="group_by_project" domain="[]" context="{'group_by':'prject_category_id'}"/>
                        <filter string="Module" name="group_by_project" domain="[]" context="{'group_by':'module_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_activity_master_act_window" model="ir.actions.act_window">
            <field name="name">Project Tasks Master</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_activity_master_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('kw_activity_master_form')})]"/>

        </record>

        <menuitem name="Project Tasks Master" action="kw_activity_master_act_window" id="menu_activity_act" parent="menu_project_master" groups="project.group_project_manager"/>

        <record id="kw_project_manager_task_master_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="priority" eval="25"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="name" string='Task Name'/>
                    <field name="project_id" />
                    <field name="module_id" />
                    <field name="prject_category_id" />
                    <field name="mapped_to" widget='many2many_tags' string="Department"/>
                    <field name="planning_start_date"/>
                    <field name="planning_end_date"/>
                    <field name="tl_employee_id"/>
                    <field name="task_status"/>
                    <field name="planned_hours" string="Planning Hour"/>
<!--                    <field name="planning_hour"/>-->
                    <field name="remaining_hours"/>
                </tree>
            </field>
        </record>

        <record id="activity_project_master_search" model="ir.ui.view">
            <field name="name">activity_master_type.search</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <search string="Activity Type">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="module_id" />
                    <field name="prject_category_id"/>
                    <field name="mapped_to"/>
                    <!-- <field name="planning_start_date"/>
                    <field name="planning_end_date"/> -->
                    <field name="tl_employee_id"/>
                    <field name="planned_hours" string="Planning Hour"/>
<!--                    <field name="planning_hour"/>-->
                    <group expand="1" string="Group By">
                        <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="kw_activity_master_project_manager_act_window" model="ir.actions.act_window">
            <field name="name">Project Activity</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">['&amp;',('parent_id','=',False),'|',('project_id.emp_id.user_id', '=', uid),'|',('project_id.reviewer_id.user_id', '=', uid),'|',('project_id.sbu_id.representative_id.parent_id.user_id', '=', uid),'|',('project_id.sbu_id.employee_id.parent_id.user_id', '=', uid),'|',('project_id.sbu_id.employee_id.parent_id.parent_id.user_id', '=', uid),('project_id.sbu_id.employee_id.user_id', '=', uid)]</field>
            <field name="context">{'create': False, 'edit': False, 'import': False,'search_default_group_by_project':1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_project_manager_task_master_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_activity_master_form')})]"/>
        </record>

        <menuitem name="Project Activity"
                  sequence="99"
                  action="kw_activity_master_project_manager_act_window"
                  id="project_task_manager_report_menu"
                  parent="hr_timesheet.menu_timesheets_reports"
                  groups='hr_timesheet.group_hr_timesheet_user'/>

    </data>
</odoo>
