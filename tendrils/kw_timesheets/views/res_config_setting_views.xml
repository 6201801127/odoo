<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="87"/>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_timesheet']" position="inside">
                <div string="Timesheets">
                    <h2>Restrict previous week timesheet entry</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Restrict previous week timesheet entry">
                            <div class="o_setting_left_pane">
                                <field name="validation_check"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="validation_check"/>
                                <div class="text-muted">
                                    Restrict previous week timesheet entry
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@data-key='hr_timesheet']" position="inside">
                <div string="Timesheets">
                    <h2>One Day Validation Check</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="One Day Pop-up Check">
                            <div class="o_setting_left_pane">
                                <field name="one_day_validation_check"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="one_day_validation_check"/>
                                <div class="text-muted">
                                    One Day Pop-up Check
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" title="One Day Restriction Check">
                            <div class="o_setting_left_pane">
                                <field name="one_day_restriction_check"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="one_day_restriction_check"/>
                                <div class="text-muted">
                                    One Day Restriction Check
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" title="RA, Project Manager, Reviewer Validation">
                            <div class="o_setting_left_pane">
                                <field name="ra_pm_reviewer_validation_check"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ra_pm_reviewer_validation_check"/>
                                <div class="text-muted">
                                    RA, Project Manager, Reviewer Validation
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>