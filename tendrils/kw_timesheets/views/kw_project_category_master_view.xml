<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

      
        <record id="kw_project_category_master_form" model="ir.ui.view">
            <field name="name">kw_project_category_master.form</field>
            <field name="model">kw_project_category_master</field>
            <field name="arch" type="xml">
                <form  delete="false" >
                    <sheet>
                    <group>              
                        <group>
                            <field name="name" />
                            <field name="code"/>
                            <field name="mapped_to" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>   
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_project_category_master_tree" model="ir.ui.view">
            <field name="name">kw_project_category_master.tree</field>
            <field name="model">kw_project_category_master</field>
            <field name="arch" type="xml">
                <tree delete="false" >
                    <field name="name" />
                    <field name="mapped_to" />
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="kw_project_category_master_act_window" model="ir.actions.act_window">
            <field name="name">Project Category</field>
            <field name="res_model">kw_project_category_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            
        </record>
        <menuitem name="Masters"  id="menu_project_master" parent="project.menu_project_config" groups="project.group_project_manager"/>
        <menuitem name="Project Category" action="kw_project_category_master_act_window" id="menu_project_category_act" parent="menu_project_master" groups="project.group_project_manager"/>

       
    </data>
</odoo>
