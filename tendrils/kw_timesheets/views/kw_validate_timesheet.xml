<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_validate_wizard" model="ir.ui.view">
            <field name="name">Validate</field>
            <field name="model">kw_validate_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                        <div class="text-center text-primary h3">
                            <!-- <field name="message" readonly="1"/> -->
                            <b><h2 class="text-center  text-primary mb-5"> Are you sure, you want to submit ? </h2></b>
                         </div>
                            <center>
                                <button name="button_validate" type="object" class="btn btn-primary btn-lg">Confirm</button>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kw_validate_actions" name="Validate"
		            src_model="kw_weekly_timesheet_report" res_model="kw_validate_wizard"
		            view_type="form" view_mode="form" key2="client_action_multi" target="new"/>
    </data>
</odoo>
