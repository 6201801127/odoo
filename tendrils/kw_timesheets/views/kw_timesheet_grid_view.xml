<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id ="hr_timesheet.act_hr_timesheet_line" model="ir.actions.act_window">
            <field name="view_mode">grid,tree</field>
            <!-- <field name="context">{'custom_timesheet_report':True}</field> -->
        </record>

        <record id="account_analytic_line_grid_view" model="ir.ui.view">
            <field name="name">view.account.analytic.line.grid</field>
            <field name="model">account.analytic.line</field>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <grid string="Timesheets" adjustment="object" adjust_name="adjust_grid">
                    <field name="project_id" type="row" section="1"/>
                    <field name="prject_category_id" type="row"/>
                    <field name="task_id" type="row"/>
                    <field name="date" type="col">
                        <range name="week" string="Week" span="week" step="day"/>
                        <range name="month" string="Month" span="month" step="day"/>
                    </field>
                    <field name="unit_amount" type="measure" widget="timesheet_uom"/>
                </grid>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_account_analytic_line_inherit_grid_view">
			<field name="model">account.analytic.line</field>
			<field name="inherit_id" ref="timesheet_grid.timesheet_view_grid_by_project"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="prject_category_id" type="row"/>
                </xpath>
            </field>
       
        </record>

        <!-- Grid Report View -->
        <record id="account_analytic_line_grid_report_view" model="ir.ui.view">
            <field name="name">view.account.analytic.line.grid report</field>
            <field name="model">account.analytic.line</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <grid string="Timesheets" adjustment="object" adjust_name="adjust_grid">
                    <field name="employee_id" type="row"/>
                    <field name="project_id" type="row" section="1"/>
                    <field name="prject_category_id" type="row"/>
                    <field name="task_id" type="row"/>
                    <field name="date" type="col">
                        <range name="week" string="Week" span="week" step="day"/>
                        <range name="month" string="Month" span="month" step="day"/>
                    </field>
                    <field name="unit_amount" type="measure" widget="timesheet_uom"/>
                </grid>
            </field>
        </record>
        
    </data>
</odoo>