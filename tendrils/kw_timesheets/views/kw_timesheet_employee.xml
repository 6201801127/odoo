<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="action_kw_timesheet_employee_tree" model="ir.ui.view">
            <field name="name">view_employee_tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="priority" eval="100" />
            <field name="arch" type="xml">
                <tree string="employee_tree" >
                    <field name="name" string="Employee Name" />
                    <field name="emp_code" />
                    <field name="job_id" />
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                    <field name="employement_type" />
                    <field name="job_branch_id" string="Work Location"/>
                    <field name="enable_timesheet" widget='boolean_toggle' string='Timesheet Enable/Disable'/>
                </tree>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_kw_timesheet_employee_search" model="ir.ui.view">
            <field name="name">view_kw_timesheet_employee_search</field>
            <field name="model">hr.employee</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <search string="employee_search">
                    <field name="name" string="Name" />
                    <field name="emp_code" />
                    <field name="job_id" />
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                    <field name="employement_type" />
                    <!-- <field name="work_email" string="Email ID"/> -->
                    <!-- <field name="epbx_no" string="Extension No"/> -->
                    <!-- <field name="mobile_phone" string="Phone Number"/> -->
                    <field name="job_branch_id" string="Work Location"/>
                    <filter string="Enable" domain="[('enable_timesheet', '=',True)]" name="enable_timesheet"/>
                    <filter string="Disable" domain="[('enable_timesheet', '=',False)]" name="disable_timesheet"/>
                    <filter name="employement_type" string="FTE" domain="[('employement_type.code','=','P')]" groups="hr.group_hr_manager"/>
                    <filter name="employement_type" string="RET" domain="[('employement_type.code','in',['S','C'])]" groups="hr.group_hr_manager"/>
                    <filter name="employement_type" string="Contractual" domain="[('employement_type.code','=','CE')]" groups="hr.group_hr_manager"/>

                    <group expand="0" string="Group By">
                        <filter name="group_department_id" string="Department" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_kw_timesheet_employee_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Timesheet Employee</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="action_kw_timesheet_employee_tree"/>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_kw_timesheet_employee_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_neutral_face">
                    Create Employee
                </p>
            </field>
        </record>


        <menuitem id="kw_timesheet_employee_menu_action" name="Timesheet Employee" parent="hr_timesheet.hr_timesheet_menu_configuration"
        action="action_kw_timesheet_employee_act_window" sequence="99" groups="hr_timesheet.group_timesheet_manager"/>
    </data>
</odoo>