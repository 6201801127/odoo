<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_sub_task_master_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <form delete="false">
                    <!-- <header>
                        <button name="action_reopen_task" string="Re-Open" type="object" class="btn-success" attrs="{'invisible':[('task_status', '!=','Completed')]}"/>
                    </header> -->
                    <sheet>
                        <group>
                            <group>
                                <field name="task_status" invisible="1"/>
                                <field name="project_active_memb" invisible="1"/>
                                <field name="prject_category_id" required='1' options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" domain="[('mapped_to','=','Project')]" />
                                <field name="project_id" required='1' options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"  domain="['&amp;',('prject_category_id.mapped_to','=','Project'),'|',('emp_id.user_id','=',uid),('resource_id.emp_id.user_id','=',uid)]"/>
                                <field name="parent_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" string='Activity' required ='1' domain="['&amp;','&amp;','&amp;',('project_id','=',project_id),('parent_id','=',False),('task_status','=','In Progress'),'|',('project_id.emp_id.user_id','=',uid),('tl_employee_id.user_id','=',uid)]"/>
                                <field name="activity_module" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                                <field name="name" string='Task Name'/>
                                <field name="mapped_to" required='0' invisible="1" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" widget='many2many_tags'/>
                                <field name="tl_employee_id" string="Activity Team Leader" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" readonly='1' force_save='1'/>
                                <!-- <field name="module_id" readonly='1' force_save='1'/> -->
                                <field name="assigned_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" required="1" domain="[('id','in',project_active_memb)]"/>
                            </group>
                            <group>
                                <group string="Activity">
                                    <field name="activity_planning_start_date" string="Start Date"/>
                                    <field name="activity_planning_end_date" string="End Date"/>
                                    <field name="activity_planned_hours" string="Planned Hours"/>
                                    <field name="activity_remaining_hours" string="Remaining Hours"/> 
                                </group>
                                <group string="Task">
                                    <field name="planning_start_date" string="Start Date" />
                                    <field name="planning_end_date" string="End Date"/>
                                    <field name="planned_hours" string="Task Hour" required='1' widget="float_time"/>
                                </group>
                            </group>
                        </group>
                        <group>
                            <field name="timesheet_ids" style="pointer-events:none;" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_sub_task_master_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="priority" eval="25"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree import="0"  delete="false">
                    <field name="name" string='Task Name'/>
                    <field name="project_id" />
                    <!-- <field name="module_id" /> -->
                    <field name="prject_category_id" />
                    <field name="mapped_to" widget='many2many_tags' string="Department" invisible="1"/>
                    <field name="planning_start_date"/>
                    <field name="planning_end_date"/>
                    <field name="tl_employee_id" string="Actvity Team Leader"/>
                    <field name="parent_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" string="Activity Name"/>
                    <field name="activity_module" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                    <field name="assigned_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                    <field name="task_status" string="Task Status"/>
                    <field name="planned_hours" string="Planning Hour" widget="float_time"/>
<!--                    <field name="planning_hour"/>-->
                    <field name="remaining_hours"  widget="float_time"/>
                    <button name="action_reopen_task" string="Re-Open" type="object" class="btn-success" attrs="{'invisible':[('task_status', '!=','Completed'),('task_status', '!=',False)]}"/>
                </tree>
            </field>
        </record>

        <record id="sub_task_type_search" model="ir.ui.view">
            <field name="name">activity_type.search</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <search string="Activity Type">
                    <field name="name"/>
                    <field name="project_id"/>
                    <!-- <field name="module_id" /> -->
                    <field name="prject_category_id"/>
                    <field name="mapped_to"/>
                    <field name="tl_employee_id"/>
                    <field name="planned_hours" string="Planning Hour" />
                    <field name="assigned_employee_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                    <group expand="1" string="Group By">
                        <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter string="Category" name="group_by_project" domain="[]" context="{'group_by':'prject_category_id'}"/>
                        <filter string="Assigned Employee" name="group_by_employee" domain="[]" context="{'group_by':'assigned_employee_id'}"/>
                        <!-- <filter string="Module" name="group_by_project" domain="[]" context="{'group_by':'module_id'}"/> -->
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_sub_task_master_act_window" model="ir.actions.act_window">
            <field name="name">Add Project Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <!-- <field name="domain">[('parent_id','!=', False)]</field> -->
            <field name="domain">['&amp;',('parent_id','!=',False),'|',('project_id.emp_id.user_id', '=', uid),('create_uid','=',uid)]</field>
            <field name="context">{'default_user_id':False}</field>
            <field name="search_view_id" ref="sub_task_type_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_sub_task_master_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('kw_sub_task_master_form')})]"/>
        </record>

        <menuitem name="Add Project Tasks" action="kw_sub_task_master_act_window" id="menu_sub_task_master_act"  parent="hr_timesheet.menu_hr_time_tracking" sequence='99'/>

    </data>
</odoo>
