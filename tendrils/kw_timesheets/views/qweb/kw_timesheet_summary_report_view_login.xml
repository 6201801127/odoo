<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="kw_timesheet_summary_form" name="Timesheet">
            <t t-call="website.layout">
                <div class="container-fluid pt-0 px-5">

                    <div class="card">
                        <div class="card-header py-4">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-6">
                                    <!-- <img src="/kwantify_theme/static/img/csmlogobtb.png" />
                                    <i class="fa fa-long-arrow-right fa-2x mx-3"/> -->
                                    <span class="h3" style="text-align: center;">
                                    Timesheet Effort Summary  &amp; Implication in Payroll | June-2021
                                    </span>
                                </div>
                            </div>
                            
                        </div>
                
                        <table border="0">
                            <tbody>
                                <t t-set="i" t-value="timesheet_form_data"/>                               
                                <tr>
                                <td>
                                    <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                        <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                            <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                                Dear <t t-esc="timesheet_form_data['empname']" />,  
                                            </span>
                                        </h5>
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                            Please find below the summary of your Timesheet efforts for <t t-esc="timesheet_form_data['attendancemonth']"/>-<t t-esc="timesheet_form_data['attendanceyear']"/> and Implication in payroll.
                                        </p>
                                        <p><u>
                                            <b>
                                                Summary of Timesheet efforts :
                                            </b>
                                        </u></p>
                                        <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem;">
                                            <tbody><tr>
                                                <td style="height: 30px;width:50%; padding-left:20px;font-weight:700;color:#676767;text-align:left;">Required Effort</td>
                                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:50%;">
                                                    
                                                   <t t-esc="timesheet_form_data['requiredefforthour']" /> hrs
                                                   
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="height: 30px;width:50%; padding-left:20px;font-weight:700;color:#676767;text-align:left;">Actual Effort</td>
                                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:50%;">
                                                    <t t-esc="timesheet_form_data['numactualeffort']" /> hrs
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="height: 30px;width:50%; padding-left:20px;font-weight:700;color:#676767;text-align:left;">Deficit Effort</td>
                                                  
                                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:50%;">
                                                    <t t-esc="timesheet_form_data['totaleffort']" /> hrs
                                                </td>
                                            </tr>
                                          
                                        </tbody>
                                        </table>
                                        <p><u>
                                            <b>
                                                Implication in payroll :
                                            </b>
                                        </u> </p>
                                        <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem;">
                                            <tbody><tr>
                                                <td style="height: 30px;width:50%; padding-left:20px;font-weight:700;color:#676767;text-align:left;">EL Deduct</td>
                                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:50%;">
                                                    <t t-esc="timesheet_form_data['timesheeteldays']" /> days
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="height: 30px;width:50%; padding-left:20px;font-weight:700;color:#676767;text-align:left;">Paycut(LWOP)</td>
                                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:50%;">
                                                    <t t-esc="timesheet_form_data['timesheetpaycutdays']" /> days
                                                </td>    
                                            </tr>
                                        </tbody>
                                        </table>
                                     
    
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        </table>
 
                    </div>

                </div>
                <div class="wrap">
					<div class="container">
						<section class="service-request mt32">
							<div class="container card">
								<div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section__content text-center">
												<div class="swal2-icon swal2-success swal2-animate-success-icon"
												     style="display: flex;" data-oe-model="ir.ui.view" data-oe-id="1641"
												     data-oe-field="arch"
												     data-oe-xpath="/t[1]/t[1]/div[1]/div[1]/div[1]/div[1]">
													<span class="swal2-success-line-tip"/>
													<span class="swal2-success-line-long"/>
													<div class="swal2-success-ring"/>
												</div>
												<h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
													Thank you!
												
												</h2>
												<a class="btn btn-primary badge"
												   style="background-color: #f7941d !important;" t-attf-href="/web">
													<i class="fa fa-arrow-circle-left "/>
													&amp;nbsp;
													Go To Dashboard
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
            </t>
        </template>

        


