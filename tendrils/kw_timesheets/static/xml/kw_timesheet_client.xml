<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="MyTimesheet">
        <div class="container pt-3">
			<div class="d-flex justify-content-center">
				<p class="h3 font-weight-bold">Weekly Timesheet Entry</p>
			</div>
            <div id="timesheet">
            </div>
            
		</div>
    </t>
    <t t-name="Timesheet">
        <div class="d-flex justify-content-between mb-3">
            <div><button class="btn btn-warning"><span class="fa fa-arrow-circle-left"/> Prev </button></div>
            <div><button class="btn btn-warning"> Next <span class="fa fa-arrow-circle-right"/></button></div>
        </div>
        <form action="/savedata" method="post" name="timesheet_form">
            <div class="table-responsive">
                <table class="table table-bordered">  
                    <thead> 
                        <th class="text-center">Category</th>
                        <th class="text-center">Tagged To</th>
                        <th class="text-center">Activity</th>
                        <th width="8%" class="text-center" >MON <br/><t t-esc="current_week[1][0]"/></th>
                        <th width="8%" class="text-center" >TUE <br/><t t-esc="current_week[1][1]"/></th>
                        <th width="8%" class="text-center" >WED <br/><t t-esc="current_week[1][2]"/></th>
                        <th width="8%" class="text-center" >THU <br/><t t-esc="current_week[1][3]"/></th>
                        <th width="8%" class="text-center" >FRI <br/><t t-esc="current_week[1][4]"/></th>
                        <th width="8%" class="text-center" >SAT <br/><t t-esc="current_week[1][5]"/></th>
                        <th width="8%" class="text-center" >SUN <br/><t t-esc="current_week[1][6]"/></th>
                        <th width="8%" class="text-center">TOTAL</th>
                        <th width="4%" class="text-center">Action</th>
                    </thead>
                    <tbody id="timesheet_block">
                        <tr class="timesheet">
                            <td>
                                <select class="form-control project-category-select" id="project-category_select_0" name="category_select_0" t-att-data-selected="0">
                                    <option value="0">Select</option>
                                    <t t-foreach="project_category" t-as="pc">
                                        <option t-att-value="pc['id']" t-att-selected="pc['id'] == selected_period_id"><t t-esc="pc['name']"/></option>
                                    </t>
                                </select>
                            </td>
                            <td>
                                <select class="form-control project-select" id="project_select_0" name="project_select_0" >
                                    <option value="0">Select</option>
                                    
                                </select>
                            </td>
                            <td>
                                <select class="form-control project-activity-select" id="project_task_select_0" name="project_task_select_0">
                                    <option value="0">Select</option>
                                </select>
                            </td>
                            <td>
                                <input class="form-control" type="text" name="mon_0" id="mon_0"/> 
                                <input class="form-control" type="hidden" t-att-value="current_week[0][0]" name="monday_0" id="monday_0"/> 
                            </td>
                            <td>
                                <input class="form-control" type="text" name="tue_0" id="tue_0"/>
                                <input class="form-control" type="hidden" t-att-value="current_week[0][1]" name="tuesday_0" id="tuesday_0"/> 
                            </td>
                            <td>
                                <input class="form-control" type="text" name="wed_0" id="wed_0"/>
                                <input class="form-control" type="hidden" t-att-value="current_week[0][2]" name="wednesday_0" id="wednesday_0"/> 
                            </td>
                            <td>
                                <input class="form-control" type="text" name="thu_0" id="thu_0"/>
                                <input class="form-control" type="hidden" t-att-value="current_week[0][3]" name="thursday_0" id="thursday_0"/> 
                            </td>
                            <td>
                                <input class="form-control" type="text" name="fri_0" id="fri_0"/>
                                <input class="form-control" type="hidden" t-att-value="current_week[0][4]" name="friday_0" id="friday_0"/> 
                            </td>
                            <td>
                                <input class="form-control" type="text" name="sat_0" id="sat_0"/>
                                <input class="form-control" type="hidden" t-att-value="current_week[0][5]" name="saturday_0" id="saturday_0"/> 
                            </td>
                            <td>
                                <input class="form-control" type="text" name="sun_0" id="sun_0"/>
                                <input class="form-control" type="hidden" t-att-value="current_week[0][6]" name="sunday_0" id="sunday_0"/> 
                            </td>
                            <td></td>
                            <td class="text-center timesheet_add_more">
                                <span class="fa fa-trash remove-timesheet-row fa-2x" title="Remove"/>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td class="font-weight-bold">TOTAL</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="text-center"><span class="fa fa-plus-circle add-timesheet-row fa-2x" title="Add More"/></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="d-flex justify-content-center"><button type="submit" class="btn btn-warning"><span class="h4">Submit</span></button></div>
        </form>

    </t>
</templates>