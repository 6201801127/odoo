<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        
        <record id="kw_product_category_tree" model="ir.ui.view">
        <field name="name">kw_product_category.tree</field>
        <field name="model">kw_product_category</field>
        <field name="arch" type="xml">
            <tree string="Product Category" create='1' editable='bottom' delete='1'>
                <field name="name"/>
                <field name="code"/>
                <field name="base_code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

      <record id="action_kw_product_category" model="ir.actions.act_window">
        <field name="name">Product Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kw_product_category</field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_inventory.kw_product_category_tree')})]"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a Product Category.
          </p><p>
            Currently Product Category is not added.
          </p>
        </field>
    </record>

    <!-- <menuitem id="kw_product_category_menu" action="kw_inventory.action_kw_product_category" name="Product Category" parent="codification_parent_menu"
    sequence="1"/> -->
    </data>
</odoo>
