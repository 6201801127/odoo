<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Material Management  Log -->
        <record id="kw_material_management_log_view_tree" model="ir.ui.view">
            <field name="name">kw_material_management_log.view.tree</field>
            <field name="model">kw_material_management_log</field>
            <field name="arch" type="xml">
                <tree decoration-success="status == 'Issued'" decoration-danger="status == 'Released'" create='0' edit='0' delete='0'>
                    <field name="action_taken_on" />
                    <field name="action_taken_by" />
                    <field name="product_id" />
                    <field name="action_remark" />
                    <field name="status" />
                </tree>
            </field>
        </record>

        <record id="kw_material_management_log_action_window" model="ir.actions.act_window">
            <field name="name">Material Management Log</field>
            <field name="res_model">kw_material_management_log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_material_management_log_view_tree')})]" />
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        
     
    </data>
</odoo>