    <record id="view_product_variant_tree" model="ir.ui.view">
      <field name="name">product.variants.code.master.tree</field>
      <field name="model">product.template</field>
      <field name="arch" type="xml">
          <tree string="" editable='bottom' create='0' delete='0'>
              <field name="code" readonly='0' string='code (i.e. A1,1A,AA,11)'/>
              <field name="name" readonly='1'/>
              <field name="alias_name" readonly='0'/>
              <!-- <field name="variant_code"/> -->
          </tree>
      </field>
    </record>


    <record id="product_code_master_action" model="ir.actions.act_window">
      <field name="name">Product Code</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.template</field>
      <field name="view_ids" eval="[(5, 0, 0),
      (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_inventory.view_product_variant_tree')})]"/>
      <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        </p>
      </field>
    </record>

    <record id="product_attribute_value_action" model="ir.actions.act_window">
      <field name="name">Spec code</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">product.attribute.value</field>
      <field name="view_ids" eval="[(5, 0, 0),
      (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_inventory.product_attribute_value_tree')})]"/>
      <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        </p>
      </field>
    </record>
  
