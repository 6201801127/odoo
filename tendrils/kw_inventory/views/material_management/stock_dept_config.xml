<?xml version="1.0" encoding="UTF-8"?>
<odoo>

      <record id="stock_dept_configuration_tree" model="ir.ui.view">
        <field name="name">stock_dept_configuration.tree</field>
        <field name="model">stock_dept_configuration</field>
        <field name="mode">primary</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="" editable='bottom'>
                <field name="name" required='1'/>
                <!-- <field name="department_id" options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}"/> -->
                <field name="branch_id" options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}" required='1'/>
                <field name="employee_ids" required='1' options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}" widget='many2many_tags'/>
                <field name="active" widget='boolean_toggle' required='1'/>
            </tree>
        </field>
    </record>


    <record id="stock_dept_configuration_form" model="ir.ui.view">
        <field name="name">stock_dept_configuration.form</field>
        <field name="model">stock_dept_configuration</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Department Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required='1'/>
                            <!-- <field name="department_id"  required='1' options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}"/> -->
                            <field name="branch_id"  required='1' options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}"/>
                            <field name="employee_ids" widget='many2many_tags'  required='1' options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}"/>
                            <field name="active" widget='boolean_toggle'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="stock_dept_configuration_action" model="ir.actions.act_window">
      <field name="name">Store Configuration</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">stock_dept_configuration</field>
      <field name="view_ids" eval="[(5, 0, 0),
      (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_inventory.stock_dept_configuration_tree')}),
      (0, 0, {'view_mode': 'form', 'view_id': ref('kw_inventory.stock_dept_configuration_form')})]"/>
      <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        </p>
      </field>
    </record>

    <menuitem id="stock_dept_configuration_parent_menu" name="Stock Store Configuration" parent="stock.menu_stock_config_settings"
      sequence="299"/>
    <menuitem id="dept_config_master_menu" action="kw_inventory.stock_dept_configuration_action" name="Store Configuration" parent="stock_dept_configuration_parent_menu"
    sequence="1"/>

</odoo>
