<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kw_vendor_created_mail_template" model="mail.template">
        <field name="name">Vendor Creation Email Template</field>
        <field name="email_from">${object.env.user.employee_ids.work_email}</field>
        <field name="subject">New Vendor Created</field>
        <field name="email_to">${ctx['mail_to']}</field>
        <field name="lang">${object.lang}</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[
                <div style="font-family: Arial, sans-serif; color: #333; font-size: 16px;">
                    <p style="margin-bottom: 20px;font-weight: bold">
                        Dear Concerns,
                    </p>
                    <p style="margin-bottom: 20px;">
                        A new vendor has been added and is pending for approval. Please review the details below:
                    </p>
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                        <tr style="background-color: #f0f0f0;">
                            <td style="padding: 10px;">Vendor Name:</td>
                            <td style="padding: 10px;">${object.name}</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px;">Vendor Code:</td>
                            <td style="padding: 10px;">${object.vendor_code}</td>
                        </tr>
                        <tr style="background-color: #f0f0f0;">
                            <td style="padding: 10px;">Phone No:</td>
                            <td style="padding: 10px;">${object.phone}</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px;">Email:</td>
                            <td style="padding: 10px;">${object.email}</td>
                        </tr>
                    </table>
                    <p style="margin-bottom: 20px;">
                        Please log into Tendrils for more information and to take action.
                    </p>
                    <p style="margin-bottom: 20px;">
                        Thanks and regards,
                    </p>
                </div>
            ]]>
        </field>
    </record>
</odoo>
