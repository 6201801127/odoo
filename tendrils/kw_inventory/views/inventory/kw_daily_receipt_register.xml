<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name tree view -->
        <record id="kw_daily_receipt_register_tree" model="ir.ui.view">
            <field name="name">daily_receipt_register.view.tree</field>
            <field name="model">kw_daily_receipt_register</field>
            <field name="arch" type="xml">
                <tree >
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="po_number"/>
                    <field name="receipt_number"/>
                    <field name="received_by"/>
                    <field name="received_date"/>
                    <field name="products"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>
        <!-- model.name form view -->
        <record id="kw_daily_receipt_register_form" model="ir.ui.view">
            <field name="name">daily_receipt_register.view.form</field>
            <field name="model">kw_daily_receipt_register</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="name" readonly="1"/>
                                <field name="partner_id"/>
                                <field name="receipt_number"/>
                                <field name="received_by"/>
                                <field name="received_date"/>
                                <field name="po_number"/>
                                
                            
                                
                            </group>
                            <group>
                                <field name="products"/>
                                <field name="remark"/>
                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- model.name action window -->
        <record id="kw_daily_receipt_register_action" model="ir.actions.act_window">
            <field name="name">Daily Receipt Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_daily_receipt_register</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>
