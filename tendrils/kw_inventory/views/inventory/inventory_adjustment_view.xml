<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="kw_inventory_adjustment_template">
			<field name="model">stock.inventory</field>
			<field name="inherit_id" ref="stock.view_inventory_form"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='product_qty']" position="replace">
	                <field name ="product_qty" string="Real Qty"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree" position="inside">
                    <field name ="opening_balance" string="OB Qty"/>
                    <field name ="closing_balance" string="CB Qty"/>
                    <field name ="quantity_inorder" string="Qty in Order"/>
                    <field name ="quantity_indented" string="Qty Indented"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='theoretical_qty']" position="replace">
                    <field name="theoretical_qty"  invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>