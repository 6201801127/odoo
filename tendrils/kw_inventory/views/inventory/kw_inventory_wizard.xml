<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="kw_inventory_wizard" model="ir.ui.view">
			<field name="name">Create Indent</field>
			<field name="model">kw_inventory_wizard</field>
			<field name="arch" type="xml">
				<form>
					<div class="row">
						<div class="col-sm-8 col-sm-offset-4 mx-auto">
							<div class="text-center text-primary h3">
								<field name="message" attrs="{'invisible':(['message','=',False])}" readonly="1"/>
								<field name="button_hide" invisible="1"/>

							</div>
							<b>
								<h2 class="text-center  text-primary mb-5">
									<field name="confirm_message" attrs="{'invisible':[('button_hide','!=',False)]}"
									       readonly="1"/>
								</h2>
							</b>
							<center>
								<button name="button_indent" type="object"
								        attrs="{'invisible':[('button_hide','!=',False)]}"
								        class="btn btn-primary btn-lg">Confirm
								</button>
								<footer></footer>
							</center>
						</div>
					</div>
				</form>
			</field>
		</record>
		<act_window id="kw_inventory_wizard_actions"
		            name="Create Indent"
		            src_model="kw_add_product"
		            res_model="kw_inventory_wizard"
		            view_type="form"
		            view_mode="form"
		            key2="client_action_multi"
		            target="new"/>
	</data>
</odoo>
