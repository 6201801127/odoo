<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        
        <record id="kw_indent_consolidation_view_tree" model="ir.ui.view">
            <field name="name">Indent Consolidation Tree</field>
            <field name="model">kw_consolidation</field>
            <field name="arch" type="xml">
                <tree create='0'>
                    <!-- Add your fields here -->
                    <field name="date" string="Date" />
                    <field name="indent_number" string="Indent Number"/>
                    <field name="department" string="Department" widget="many2many_tags" invisible="1"/>
                    <field name="requisition_rel" string="Requisition Number" widget="many2many_tags"/>
                    <field name="project_code" string="Project Code"/>
                    <field name="state" string="Status"/>
                    <field name="quotation_no" string="Quotation No"/>
                    <field name="quotation_created" string="Quotation Created" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="kw_indent_consolidation_view_form" model="ir.ui.view">
            <field name="name">Indent Consolidation Form</field>
            <field name="model">kw_consolidation</field>
            <field name="arch" type="xml">
                <form string="" duplicate="0" create='0'>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="Indent,Quotation" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="create_check" invisible="1"/>
                                <field name="indent_number" string="Indent Number"/>
                                <field name="date" string="Date" />
                                <field name="requisition_rel" string="Requisition Number" widget='many2many_tags' options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible': [('create_check','=',False)], 'readonly': [('create_check','=',True)]}"/>
                                <!-- <field name="indent_number" string="Indent Number" /> -->
                            </group>
                            <group>
                                <field name="department" string="Department"  attrs="{'required': [('indent_number','!=','New')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" widget='many2many_tags'/>
                                <field name="project_code" string="Project Code"/>
                                <field name="indenting_department" widget='many2many_tags'/>
                                <!-- <field name="state" string="status" attrs="{'invisible': [('create_check','=',False)]}"/> -->
                            </group>
                            <h1 class="my-3">Indent Item Details </h1>
                            <field name="add_product_consolidation_rel" string="Indent Item Details" attrs="{'readonly': [('create_check','=',True)]}" >
                                <!-- <tree create="false" edit="false" delete="false" options="{ 'no_open': True}"> -->
                                <tree options="{ 'no_open': True}" editable="bottom">
                                    <field name="item_code" string="Item Code" 
                                    required="1"
                                    />
                                    <field name="item_description" string="Item Name" />
                                    <field name="quantity_required" string="Qty Required"  />
                                    <!-- <field name="quantity_approved" string="Qty Approved" readonly="1"/> -->
                                    <!-- <field name="quantity_onorder" string="Qty On Order" style="pointer-events:none;"/>
                                    <field name="quantity_balance" string="Qty Balance" style="pointer-events:none;"/> -->
                                    <field name="last_proc_date" string="Date" />
                                    <!-- <field name="last_proc_value" string="Last Proc.Value" style="pointer-events:none;"/> -->
                                    <!-- <field name="status" string="Status" style="pointer-events:none;" /> -->
                                    <field name="add_product_id" string="Product Id"  invisible="1"/>
                                    
                                </tree>
                            </field>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                         <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_indent_consolidation_view_search" model="ir.ui.view">
            <field name="name">kw_indent_consolidation_items.search</field>
            <field name="model">kw_consolidation</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group expand="0" string="Group By">                                                                                 
                        <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_indent_consolidation_action_window" model="ir.actions.act_window">
            <field name="name">Indent Consolidation</field>
            <field name="res_model">kw_consolidation</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="kw_indent_consolidation_view_search"></field>
            <field name="context">{'search_default_group_state': 1}</field>
        </record>
    </data>
</odoo>