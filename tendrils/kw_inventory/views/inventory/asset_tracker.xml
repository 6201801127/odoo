<?xml version="1.0"?>
<odoo>
    <data>
 
    <record model="ir.ui.view" id="account_asset_asset_tracker_tree">
        <field name="name">account.asset.asset.purchase.tree</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <tree create='0' edit='0' delete='0'>
                <field name="name" string='FA Code'/>
                <field name="asset_owner_id"/>
                <field name="asset_owner_branch_id"/>
                <field name="department_id"/>
                <field name="desigation_id"/>
                <field name="mobile_no" string='Mobile No'/>
                <field name="emp_code"/>
                <field name="gatepass_status"/>
                <field name="gp_date_from"/>
                <field name="gp_date_to"/>
                <field name="state" invisible='1'/>
            </tree>
        </field>
    </record>

    <record id="account_asset_asset_view_form_tracker" model="ir.ui.view">
        <field name="name">account.asset.asset.tracker.form</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <form string="" duplicate="0" edit='0' delete='0' create='0'>
                <header>
                    <button name="action_in_out_gatepass" attrs="{'invisible': [('gatepass_status', '=', 'notallowed')]}" string="In/Out" icon='fa-check' type="object" class="btn btn-success"/>
                    <field name="gatepass_status" widget="statusbar" statusbar_visible="allowed,notallowed"/>
                </header>
                <sheet>
                    <group>
                        <group string="">
                            <field name="image" widget='image' string="Photo" style='width:300px;height:200px;' readonly='1'/>
                            <field name="state" invisible='1'/>
                        </group>
                        <group string="Personal Details">
                            <div class="oe_inline">
                                <b>Gate-pass satus   :  </b>  <field name="gatepass_status" readonly='1'/>
                            </div>
                                <button string="" class="btn-success" icon="fa-check lg" attrs="{'invisible': [('gatepass_status', '=', 'notallowed')]}"/>
                                <button string="" class="btn-danger" icon="fa-times lg" attrs="{'invisible': [('gatepass_status', '=', 'allowed')]}"/>
                            <field name="name" string='Asset Code' readonly='1'/>
                            <field name="gp_date_from" readonly='1'/>
                            <field name="gp_date_to" readonly='1'/>
                            <field name="asset_owner_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="emp_code" readonly='1'/>
                            <field name="department_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="desigation_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="asset_owner_branch_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="mobile_no" string='Mobile No' readonly='1'/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Asset Tracker">
                            <field name="asset_tracker_ids">
                                <tree>
                                    <field name="asset_id" string='Asset Code' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="asset_status"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="owner_id"/>
                                    <field name="action_by" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="remark" string='Remark'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
        </record>

    <record model="ir.actions.act_window" id="asset_tracker_window">
        <field name="name">Asset Tracker</field>
        <field name="res_model">account.asset.asset</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_inventory.account_asset_asset_tracker_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('kw_inventory.account_asset_asset_view_form_tracker')})]"/>
        <field name="domain">['|',('gatepass_status', '=', 'notallowed'),('gatepass_status', '=', 'allowed')]</field>
    </record>
    </data>
</odoo>
