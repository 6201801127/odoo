<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_res_partner_inherited">
            <field name="name">kw_res_partner_view.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='type']" position="before">
                    <field name="business_operation" widget="radio" options="{'horizontal': true}" />
                </xpath>

                
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="average_turnover"/>
                </xpath>

                <xpath expr="//field[@name='vat']" position="before">
                    <field name="employee_strength"/>
                </xpath>

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="partnership_year"/>
                </xpath>

                
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="msme_reg_no"/>
                    <field name="epf_reg_no"/>
                    <field name="esi_reg_no"/>
                    <field name="labour_license_no"/>
                    <field name="tan"/>
                    <field name="pan"/>
                </xpath>

                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page name="director_details" string="Promoter/Director Details">
                        <group>
                            <group string="Director Details">
                                <field name="director_name" placeholder="Name"/>
                                <field name="director_designation" placeholder="Designation"/>
                                <field name="director_email" placeholder="Email"/>
                                <field name="director_mobile" placeholder=" Mobile No"/>
                                <field name="director_alternative_no" placeholder="Alternative No"/>
                            </group>
                            <group string="First Key Person">
                                <field name="same_as_director" />
                                <field name="first_key_person_name" placeholder="Name"/>
                                <field name="first_key_person_designation" placeholder="Designation"/>
                                <field name="first_key_person_email" placeholder="Email"/>
                                <field name="first_key_person_mobile" placeholder=" Mobile No"/>
                                <field name="first_key_person_alternative_no" placeholder="Alternative No"/>
                            </group>
                            <group string="Second Key Person">
                                <field name="same_as_first_key_person" />
                                <field name="second_key_person_name" placeholder="Name"/>
                                <field name="second_key_person_designation" placeholder="Designation"/>
                                <field name="second_key_person_email" placeholder="Email"/>
                                <field name="second_key_person_mobile" placeholder=" Mobile No"/>
                                <field name="second_key_person_alternative_no" placeholder="Alternative No"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//notebook//page[@name='accounting']//field[@name='bank_ids']" position="replace">
                    <field name="bank_ids" nolabel='1'>
                        <tree editable='bottom'>
                            <field name="bank_id" />
                            <field name="acc_number"/>
                            <field name="ifsc_code"/>
                            <field name="addr" string='Branch Address'/>
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//page[@name='accounting']" position="after">
                    <page name="documents" string="Documents Upload">
                        <group>
                            <field name="pan_doc" />
                            <field name="gst_doc" />
                            <field name="tan_doc" />
                            <field name="reg_no_doc" />
                            <field name="bank_account_doc" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>