<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_add_product_consolidation_action_window" model="ir.actions.act_window">
            <field name="name">Add Product Consolidation</field>
            <field name="res_model">kw_add_product_consolidation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
        
        <record id="kw_add_product_consolidation_view_tree" model="ir.ui.view">
            <field name="name">kw_add_product_consolidation_view_tree</field>
            <field name="model">kw_add_product_consolidation</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="item_code" string="Item Code" />
                    <field name="item_description" string="Item Description" />
                    <field name="quantity_required" string="Qty Required" />
                    <!-- <field name="quantity_approved" string="Qty Approved"/> -->
                    <field name="quantity_onorder" string="Qty On Order"/>
                    <field name="quantity_balance" string="Qty Balance"/>
                    <field name="last_proc_date" string="Last Proc.Date"/>
                    <field name="last_proc_value" string="Last Proc.Value"/>
                    <field name="status" string="status"/>
                </tree>
            </field>
        </record>

       
        <record id="kw_add_product_consolidation_view_form" model="ir.ui.view">
            <field name="name">kw_add_product_consolidation_view_form</field>
            <field name="model">kw_add_product_consolidation</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="item_code" string="Item Code" />
                            <field name="item_description" string="Item Description" />
                            <field name="quantity_required" string="Qty Required" />
                            <!-- <field name="quantity_approved" string="Qty Approved"/> -->
                            <field name="quantity_onorder" string="Qty On Order"/>
                            <field name="quantity_balance" string="Qty Balance"/>
                            <field name="last_proc_date" string="Last Proc.Date"/>
                            <field name="last_proc_value" string="Last Proc.Value"/>
                            <field name="status" string="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>