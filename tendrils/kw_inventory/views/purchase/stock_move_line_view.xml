<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="stock_move_line_inherit_view">
			<field name="model">stock.move.line</field>
			<field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='qty_done']" position="after">
					<field name="remark"/>
				</xpath>
				<!-- <xpath expr="//field[@name='qty_done']" position="before">
					<field name="challan_qty"/>
				</xpath> -->
				<xpath expr="//field[@name='product_uom_qty']" position="attributes">
					<attribute name="string">PO Quantity</attribute>
				</xpath>
				<xpath expr="//field[@name='qty_done']" position="attributes">
					<attribute name="string">Received Quantity</attribute>
				</xpath>
				<xpath expr="//field[@name='product_uom_id']" position="attributes">
					<attribute name="string">UOM</attribute>
				</xpath>
				<xpath expr="//field[@name='qty_done']" position="after">
					<field name="excess_quantity" string='Excess Quantity' />
				</xpath>
				<xpath expr="//field[@name='excess_quantity']" position="after">
					<field name="shortage_quantity" string='Shortage Quantity' />
				</xpath>
			</field>
		</record>

	</data>
</odoo>