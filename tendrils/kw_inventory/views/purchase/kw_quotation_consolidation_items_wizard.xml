<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_quotation_consolidation_items__wizard_form" model="ir.ui.view">
            <field name="name">Create Quotation Consolidation</field>
            <field name="model">kw_qc_items_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-4 mx-auto">
                            <div class="text-center text-primary h4">
                                <field name="message" readonly="1" /> 
                            </div>
                            <b><h2 class="text-center text-uppercase text-primary mb-5">Are you sure you want to create PO ?</h2></b>
                            <center>
                                <button name="button_quotation_consolidation_items" type="object" class="btn btn-primary btn-lg">Confirm</button>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kw_quotation_consolidation_items_wizard_actions" name="Create PO"
		            src_model="kw_quotation_consolidation_items" res_model="kw_qc_items_wizard" 
		            view_type="form" view_mode="form" key2="client_action_multi" target="new"/>
    </data>
</odoo>