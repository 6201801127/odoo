<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_add_product_view_tree" model="ir.ui.view">
            <field name="name">kw_add_product_view_tree</field>
            <field name="model">kw_add_product</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="item_code" string="Item Code" />
                    <field name="item_description" string="Item Description" />
                    <field name="uom" string="Uom" />
                    <field name="quantity_required" string="Qty Required"/>
                    <field name="expected_days" string="Expected Delivery In Days"/>
                    <field name="status" string="Status" attrs="{'invisible': [('status', '=', 'Draft')]}"/>
                </tree>
            </field>
        </record>

       
        <record id="kw_add_product_view_form" model="ir.ui.view">
            <field name="name">kw_add_product_view_form</field>
            <field name="model">kw_add_product</field>
            <field name="arch" type="xml">
                <form string="" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="item_code" string="Item Code" />
                            <field name="item_description" string="Item Description" />
                            <field name="uom" string="Uom" />
                            <field name="quantity_required" string="Qty Required"/>
                            <field name="expected_days" string="Expected Delivery In Days"/>
                            <field name="status" string="Status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="kw_add_product_action_window" model="ir.actions.act_window">
            <field name="name">Add Product</field>
            <field name="res_model">kw_add_product</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>