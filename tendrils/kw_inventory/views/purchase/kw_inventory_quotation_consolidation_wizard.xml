<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_inventory_quotation_consolidation_wizard" model="ir.ui.view">
            <field name="name">Create Quotation Consolidation</field>
            <field name="model">kw_inventory_quotation_consolidation_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                        <div class="text-center text-primary h3">
                            <field name="message" attrs="{'invisible':(['message','=',False])}" 
                        readonly="1"
                        /> 
                         <field name="button_hide" invisible="1" />
                         </div>
                            <b><h2 class="text-center  text-primary mb-5"><field name="confirm_message" attrs="{'invisible':[('button_hide','!=',False)]}"  readonly="1"/></h2></b>
                            <center>
                                <button name="button_quotation_consolidation" type="object" attrs="{'invisible':[('button_hide','!=',False)]}"  class="btn btn-primary btn-lg mr-2">Confirm</button>
                                <button string="Cancel" class="btn-danger btn-lg" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kw_inventory_quotation_consolidation_wizard_actions"  name="Move to Negotiation"
		            src_model="kw_quotation" res_model="kw_inventory_quotation_consolidation_wizard" 
		            view_type="form" view_mode="form" key2="client_action_multi" target="new"/>
    </data>
</odoo>