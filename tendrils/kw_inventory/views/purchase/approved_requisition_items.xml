<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>


		<record id="kw_approved_requisition_items_view_tree" model="ir.ui.view">
			<field name="name">kw_approved_requisition_items_tree</field>
			<field name="model">kw_add_product</field>
			<field name="arch" type="xml">
				<tree create="false" edit="false" delete="false">
					<!-- Add your fields here -->
					<field name="item_code" string="Item code"/>
					<field name="item_description" string="Item Description"/>
					<field name="uom" string="UOM"/>
					<field name="quantity_required" string="Qty Required"/>
					<field name="pr_rel_req_no" string="Requisition No"/>
					<field name="expected_days" string="Expected Delivery In Days"/>
					<!-- <field name="create_date" string="Item Create Date"/> -->
					<field name="indnt_no" string="Indent No" />
					<button name="view_indent" string="View Indent" type="object"  attrs="{'invisible': [('indnt_no','=',False)]}" class="text-center btn btn-primary"/>
					<field name="indent_created" string="Indent Created" invisible="1"/>
				</tree>
			</field>
		</record>

		<record id="kw_approved_requisition_items_view_form" model="ir.ui.view">
			<field name="name">kw_approved_requisition_items_form</field>
			<field name="model">kw_add_product</field>
			<field name="arch" type="xml">
				<form string="" create="false" edit="false" delete="false">
					<sheet>
						<group>
							<group>
								<field name="item_code" string="Item Code"/>
								<field name="item_description" string="Item Description"/>
								<field name="uom" string="UOM"/>
								<field name="quantity_required" string="Qty Required"/>
							</group>
							<group>
								<field name="pr_rel_req_no" string="Requisition No"/>
								<field name="expected_days" string="Expected Delivery In Days"/>
								<field name="create_date" string="Date"/>
								<field name="status" string="Status"/>
								<field name="indnt_no" string="Indent No"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="kw_approved_requisition_items_view_search" model="ir.ui.view">
            <field name="name">kw_approved_requisition_items.search</field>
            <field name="model">kw_add_product</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group expand="0" string="Group By">
                        <filter name="created_indent" string="Created Indent Items" domain="[('indent_created','=',True)]" />
						<separator/>
                        <filter name="uncreated_indent" string="Uncreated Indent Items" domain="[('indent_created','=',False)]" />
                    </group>
                </search>
            </field>
        </record>
		
		<record id="kw_approved_requisition_items_action_window" model="ir.actions.act_window">
			<field name="name">Approved Requisition Items</field>
			<field name="res_model">kw_add_product</field>
			<field name="view_mode">tree,form,pivot,graph</field>
			<field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_approved_requisition_items_view_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_approved_requisition_items_view_form')})]"/>
			<field name="domain">[('status','=','Approved'),('indent_created','=',False)]</field>
			<field name="view_type">form</field>
		</record>

	<!-- Report View -->
		<record id="kw_approved_requisition_items_report_view_tree" model="ir.ui.view">
			<field name="name">kw_approved_requisition_items_report_tree</field>
			<field name="model">kw_add_product</field>
			<field name="arch" type="xml">
				<tree create="false" edit="false" delete="false" import='false'>
					<field name="item_code" string="Item Code"/>
					<field name="item_description" string="Item Description"/>
					<field name="uom" string="UOM"/>
					<field name="quantity_required" string="Qty Required"/>
					<field name="pr_rel_req_no" string="Requisition No"/>
					<field name="expected_days" string="Expected Delivery In Days"/>
					<field name="indnt_no" string="Indent No" />
					<button name="view_indent" string="View Indent" type="object"  attrs="{'invisible': [('indnt_no','=',False)]}" class="text-center btn btn-primary"/>
					<field name="indent_created" string="Indent Created" invisible="1"/>
				</tree>
			</field>
		</record>

		<record id="kw_approved_requisition_items_report_action_window" model="ir.actions.act_window">
			<field name="name">Approved Requisition Items Report</field>
			<field name="res_model">kw_add_product</field>
			<field name="view_mode">tree</field>
			<field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_approved_requisition_items_report_view_tree')})]"/>
			<field name="domain">[('status','=','Approved')]</field>
			<field name="view_type">form</field>
		</record>

	</data>
</odoo>