<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="kw_po_register_tree_view" model="ir.ui.view">
		<field name="name">PO Register Report</field>
		<field name="model">kw_po_register_report</field>
		<field name="arch" type="xml">
			<tree create='false' delete='false' import='false'>
				
                <field name="date" string='Date'/>
                <field name="po_number" string="PO Number"/>
                <field name="vendor" string='Vendor'/>
                <field name="description" string='Items'/>
                <field name="state"/>
                <field name="department_name" string='Indenting Department'/>
                <field name="workorder_code" string='Workorder Code'/>
                <field name="in_house" string='In House'/>
                <field name="unit_of_measure" string='Unit Of Measurement' invisible='1'/>
                <!-- <field name="taxes_id" string="Taxes"/> -->
                <field name="unit_price" string='Unit Price'/>
                <field name="amount_tax" sum="Total amount" string="Total Tax"/>
                <field name="amount_total" sum="Total amount" widget="monetary"/>
			</tree>
		</field>
	</record>
    <!-- Default Search View -->
    <record id="default_search_view" model="ir.ui.view">
        <field name="name">po_register_search_view</field>
        <field name="model">kw_po_register_report</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Status" name="status" domain="[('state', '=', 'purchase')]"/>
            </search>
        </field>
    </record>

    

	<record id="kw_po_register_view_action" model="ir.actions.act_window">
		<field name="type">ir.actions.act_window</field>
		<field name="name">PO Register Report</field>
		<field name="res_model">kw_po_register_report</field>
		<field name="view_mode">tree</field>
        <field name="domain">['|',('state','=','purchase'),('state','=','cancel')]</field>
        <field name="context">{'search_default_status': 1}</field>
		<field name="view_type">form</field>
	</record>

	<menuitem id="kw_po_register_report_view_menu" name='PO Register Report' parent="purchase.purchase_report" action="kw_po_register_view_action"/>

</odoo>