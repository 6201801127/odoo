<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="kw_quotation_consolidation_items_view_tree" model="ir.ui.view">
            <field name="name">kw_quotation_consolidation_items_view_tree</field>
            <field name="model">kw_quotation_consolidation_items</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="order_id"/>
                    <field name="product_id" string="Item Code" />
                    <field name="name" string="Item Description" />
                    <field name="date_planned" string="Date" />
                    <!-- <field name="company_id" string="Company" /> -->
                    <field name="product_qty" string="Quantity" />
                    <field name="product_uom" string="Uom"  />
                    <field name="price_unit"  string="Unit Price" />
                    <field name="taxes_id"  string="Taxes" />
                </tree>
            </field>
        </record>

       
        <record id="kw_quotation_consolidation_items_view_form" model="ir.ui.view">
            <field name="name">kw_quotation_consolidation_items_view_form</field>
            <field name="model">kw_quotation_consolidation_items</field>
            <field name="arch" type="xml">
                <form string="" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="file_name" invisible="1"/>
					        <field name="prd_attachment" filename="file_name" widget="FieldBinary" string="Attachment" invisible="1"/>
                            <field name="order_id"/>
                            <field name="product_id" string="Item Code" />
                            <field name="name" string="Item Description" />
                            <field name="date_planned" string="Date" />
                            <!-- <field name="company_id" string="Company" /> -->
                            <field name="product_qty" string="Quantity" />
                            <field name="product_uom" string="Uom"  />
                            <field name="price_unit"  string="Unit Price" />
                            <field name="taxes_id"  string="Taxes" />
                            <field name="po_create" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="kw_quotation_consolidation_items_action_window" model="ir.actions.act_window">
            <field name="name">kw_quotation_consolidation_items</field>
            <field name="res_model">kw_quotation_consolidation_items</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>