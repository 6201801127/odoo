<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="kw_negotiation_view_tree" model="ir.ui.view">
            <field name="name">kw_negotiation_view_tree</field>
            <field name="priority" eval="1"/>
            <field name="model">kw_negotiation</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- <field name="negotiation_no"/> -->
                    <field name="qo_no" />
                    <field name="schedule_date" />
                    <field name="quantity" />
                    <field name="unit_price" />
                    <field name="total" />
                    <field name="negotiation_mode" />
                    <field name="description" />
                    <field name="attachment" />
                    <field name="final_price"/>
                </tree>
            </field>
        </record>

       
        <record id="kw_negotiation_view_form" model="ir.ui.view">
            <field name="name">kw_negotiation_view_form</field>
            <field name="priority" eval="1"/>
            <field name="model">kw_negotiation</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                        <group>
                            <field name="consolidation_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <!-- <field name="qo_no" /> -->
                        </group>
                        </group>
                        <notebook>
                            <page string="Negotiation">
                                <group>
                                    <group>
                                        <group>
                                            <field name="product" options="{'no_create': True, 'no_create_edit':True}" />
                                            <field name="vendor_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                            <field name="schedule_date" />
                                            <field name="quantity" />
                                            <field name="unit_price" />
                                            <field name="total" />
                                        </group>
                                        <group>
                                            <field name="negotiation_mode" />
                                            <field name="description" />
                                            <field name="attachment" />
                                            <field name="final_price"/>
                                        </group>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        

        
        <record id="kw_negotiation_action_window" model="ir.actions.act_window">
            <field name="name">Negotiation</field>
            <field name="res_model">kw_negotiation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>





