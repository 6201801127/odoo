<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="purchase_order_type_view_tree" model="ir.ui.view">
            <field name="name">Purchase Type</field>
            <field name="model">purchase_order_type</field>
            <field name="arch" type="xml">
                <tree string='Purchase Type'>
                    <field name="po_type"/>
                </tree>
            </field>
        </record>

       
        <record id="purchase_order_type_view_form" model="ir.ui.view">
            <field name="name">Purchase Type</field>
            <field name="model">purchase_order_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="po_type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="purchase_order_type_action_window" model="ir.actions.act_window">
            <field name="name">Purchase Type</field>
            <field name="res_model">purchase_order_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>