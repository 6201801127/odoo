<?xml version='1.0' encoding='utf-8'?>
<odoo>
     <!-- Action remark form view -->
    <record id="kw_gatepass_assign_form" model="ir.ui.view">
        <field name="name">kw_gatepass_assign.form</field>
        <field name="model">kw_gatepass_assign</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <group>
                                <group>
                                    <field name="stock_id"  required='1' options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    <field name="gatepass_type" required='1' widget="radio"  options="{'horizontal': true}"/>
                                    <field name="type" string='Type' attrs="{'required': [('gatepass_type', '=', 'nonreturnable')],'invisible': [('gatepass_type', '=', 'returnable')]}"/>
                                    <field name="repair" string='Type' attrs="{'required': [('gatepass_type', '=', 'returnable')],'invisible': [('gatepass_type', '=', 'nonreturnable')]}"/>
                                    <field name="remark" required='1'/>
                                    <!-- <field name="repair_date" /> -->
                                    <!-- <field name="repair_remark" /> -->
                                </group>
                            </group>
                        </p>
                        <button type="object"  name="assign_gatepass_action" class="btn-success mr-2" style="float:left;">Assign</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

     <record id="kw_gatepass_return_to_store_form" model="ir.ui.view">
        <field name="name">kw_gatepass_assign.form</field>
        <field name="model">kw_gatepass_assign</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <group>
                                <group>
                                    <field name="stock_id" invisible='1'/>
                                    <field name="repair_date" required='1'/>
                                    <field name="repair_remark" required='1'/>
                                </group>
                            </group>
                        </p>
                        <button type="object"  name="return_to_store_action" class="btn-success mr-2" style="float:left;">Assign</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>
    <record id="kw_gatepass_assign_action_window" model="ir.actions.act_window">
        <field name="name">kw_gatepass_assign.action</field>
        <field name="res_model">kw_gatepass_assign</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="kw_gatepass_assign_form"/>
        <field name="target">main</field>
    </record>

</odoo>