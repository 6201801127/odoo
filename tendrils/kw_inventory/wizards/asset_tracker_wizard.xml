<?xml version='1.0' encoding='utf-8'?>
<odoo>
     <!-- Action remark form view -->
    <record id="kw_asset_tracker_wiz_form" model="ir.ui.view">
        <field name="name">kw_asset_tracker_wiz.form</field>
        <field name="model">kw_asset_tracker_wiz</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <group>
                                <group>
                                    <field name="asset_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="asset_status" widget='radio' options="{'horizontal': true}" required='1'/>
                                    <field name="remark" required='1'/>
                                </group>
                            </group>
                        </p>
                        <button type="object"  name="in_out_gatepass_action" class="btn-success mr-2" style="float:left;">In/Out</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="kw_asset_tracker_wiz_action_window" model="ir.actions.act_window">
        <field name="name">kw_asset_tracker_wiz.action</field>
        <field name="res_model">kw_asset_tracker_wiz</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="kw_asset_tracker_wiz_form"/>
        <field name="target">main</field>
    </record>

</odoo>