<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_material_request_quotation_wizard_view" model="ir.ui.view">
            <field name="name">Create Quotation</field>
            <field name="model">kw_material_request_quotation_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                        <div class="text-center text-primary h3">
                            <field name="message" attrs="{'invisible':(['message','=',False])}" 
                        readonly="1"
                        /> 
                         <field name="button_hide" invisible="1" />
                         <b><h2 class="text-center  text-primary mb-3">select vendor</h2></b>
                         <field name="vendor_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                         </div>
                            <b><h2 class="text-center  text-primary mb-5"><field name="confirm_message" attrs="{'invisible':[('button_hide','!=',False)]}"  readonly="1"/></h2></b>
                            <center>
                                <button name="create_items_quotation" type="object" attrs="{'invisible':[('button_hide','!=',False)]}"  class="btn btn-primary btn-lg mr-2">Confirm</button>
                                <button string="Cancel" class="btn-danger btn-lg" special="cancel"/>
                                
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <!-- <act_window id="kw_material_request_quotation_wizard_actions_action"  name="Create Quotation"
		            src_model="kw_add_product_items" res_model="kw_material_request_quotation_wizard"
		            view_type="form" view_mode="form" key2="client_action_multi" target="new"/> -->
        
        <record model="ir.actions.server" id="action_create_quotation">
            <field name="name">Create quotation</field>
            <field name="model_id" ref="kw_inventory.model_kw_requisition_requested"/>
            <field name="binding_model_id" ref="kw_inventory.model_kw_requisition_requested"/>
            <!-- <field name="binding_view_id" ref="kw_inventory.kw_approved_requisition_view_tree"/> -->
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
action = model.action_create_quotation()
            </field>
        </record>
    </data>
</odoo>