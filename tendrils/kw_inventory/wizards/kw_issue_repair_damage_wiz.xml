<?xml version='1.0' encoding='utf-8'?>
<odoo>
     <!-- Action remark form view -->
    <record id="kw_issue_repair_damage_wiz_form" model="ir.ui.view">
        <field name="name">kw_issue_repair_damage_wiz.form</field>
        <field name="model">kw_issue_repair_damage_wiz</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <group>
                                <group>
                                    <field name="stock_id" string='Serial No' readonly='1' options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}" required='1'/>
                                    <field name="type"  invisible='1' widget="radio"  options="{'horizontal': true}"/>
                                    <field name="requirement_type"   attrs="{'invisible': [('type', 'in', ['repair','damage'])],'required': [('type', '=', 'issue')]}"/>
                                    <field name="project_code" attrs="{'invisible': [('requirement_type', '!=', 'project')],'required': [('requirement_type', '=', 'project')]}"/>
                                    <field name="department_id" domain="[('dept_type.code','=','department')]" options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}" attrs="{'invisible': [('type', '!=', 'issue')],'required':[('type', '=', 'issue')]}"/>
                                    <field name="employee_id" string='Issue To' attrs="{'invisible': [('type', '!=', 'issue')]}" options="{'no_quick_create':True,'no_create':True,'no_edit':True,'no_open': True,}"/>
                                    <field name="remark"  required='1'/>
                                </group>
                            </group>
                        </p>
                        <button type="object"  name="submit_type_action" class="btn-success mr-2" style="float:left;">Issue</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>


    <record id="kw_product_repair_log_view_tree" model="ir.ui.view">
        <field name="name">kw_product_repair_log.view.tree</field>
        <field name="model">kw_product_repair_log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="products" />
                <field name="repair_id" />
                <field name="repaired_on" />
                <field name="send_to_repair" />
                <field name="action_by" />
            </tree>
        </field>
    </record>
    
    <record id="kw_product_repair_log_action_window" model="ir.actions.act_window">
        <field name="name">Product Return Log</field>
        <field name="res_model">kw_product_repair_log</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
            eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_product_repair_log_view_tree')})]" />
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

</odoo>