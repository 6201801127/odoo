<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="kw_requisition_request_apply_remark_form" model="ir.ui.view">
        <field name="name">Remark</field>
        <field name="model">kw_requisition_user_remark</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <h4>Are you sure, you want to Apply requisition?</h4>
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="remark"  required='1'/>
                        </p>
                        <button type="object" context='{"apply_requisition_request":True}' name="submit_user_action" class="btn-success mr-2" style="float:left;">Submit</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>
