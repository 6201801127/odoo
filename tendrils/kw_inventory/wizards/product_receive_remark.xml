<?xml version='1.0' encoding='utf-8'?>
<odoo>
     <!-- Action remark form view -->
    <record id="product_receive_remark_view" model="ir.ui.view">
        <field name="name">Remark</field>
        <field name="model">product_receive_remark</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <h4>Are you sure, you want to receive?</h4>
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="remark"  required='1'/>
                        </p>
                        <button type="object" name="recieve_all_products" class="btn-success mr-2" style="float:left;">Recieve</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="product_reject_remark_view" model="ir.ui.view">
        <field name="name">Remark</field>
        <field name="model">product_receive_remark</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <h4>Are you sure, you want to reject?</h4>
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="remark"  required='1'/>
                        </p>
                        <button type="object" name="reject_all_products" class="btn-success mr-2" style="float:left;">Reject</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:left;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

</odoo>