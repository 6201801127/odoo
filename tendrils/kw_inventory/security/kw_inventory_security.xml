<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_pr_user" model="res.groups">
            <field name="name">PR User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_purchase_management"/>
        </record>
        <record id="group_store_user" model="res.groups">
            <field name="name">Approval Authority</field>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
            <field name="category_id" ref="base.module_category_purchase_management"/>
        </record>

        <record id="group_dept_budget_head" model="res.groups">
            <field name="name">Budget Head</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_purchase_management"/>
        </record>

        <record id="group_chief_executive" model="res.groups">
            <field name="name">CEO</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_purchase_management"/>
        </record>

        <record id="group_store_manager" model="res.groups">
            <field name="name">Store Manager</field>
            <field name="category_id" ref="base.module_category_purchase_management"/>
        </record>
        <record id="group_material_request_user" model="res.groups">
            <field name="name">Material Request User</field>
            <field name="category_id" ref="base.module_category_warehouse_management"/>
        </record>

        <record id="group_asset_tracker_user" model="res.groups">
            <field name="name">Assets Tracker</field>
            <field name="category_id" ref="base.module_category_warehouse_management"/>
        </record>
        <record id="group_po_approver" model="res.groups">
            <field name="name">Procurement Officer</field>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
            <field name="category_id" ref="base.module_category_purchase_management"/>
        </record>
        <record id="kw_inventory_manager_record_rule" model="ir.rule">
            <field name="name">Inventory Manager Access(CRUD All operations)</field>
            <field ref="model_stock_quant" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_unlink" eval="True" />
        </record>
        <record id="kw_inventory_store_manager_record_rule" model="ir.rule">
            <field name="name">Inventory Manager Access(RU operation)</field>
            <field ref="model_stock_quant" name="model_id"/>
            <field name="domain_force">[('dept_id.employee_ids','in',user.employee_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('kw_inventory.group_store_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
