<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_gatepass_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <table>
                    <head>
                        <title>CSM Technologies | IT Services, Consulting, Technology</title>
                        <style>
                            @media print{
                                .details-table td,.details-table th{

                                    border:1px solid #000!important;
                                }
                                .grn-footer{position:fixed;left:0;right:0;top:850px;}
                            }
                        </style>
                    </head>
                    <body style="margin: 0; padding: 0;font-family: arial,sans-serif;color:#676767; font-size: .9rem;margin-bottom:1rem;">
                        <table  style="margin-bottom: 0;" width="100%" border="0" cellspacing="0" cellpadding="2">
                            <tr>
                                <td height="73" >
                                    <img src="kw_inventory/static/img/csmlogobtb.png" width="150px" alt="logoimage"/>
                                    <p style="color: #000;font-size: .75rem;margin-bottom: -5px;margin-top: 3px;">
                                        <i>Level-6,OCAC Tower, Acharya Vihar</i>
                                    </p>
                                    <p style="color: #000;font-size: .75rem;margin-bottom: -5px;">
                                        <i>Bhubaneswar, Khurdha,Odisha,India,751013</i>
                                    </p>
                                    <p style="color: #000;font-size: .75rem;margin-bottom: 0px;">0674-6635900 | info@csm.tech | www.csm.tech</p>
                                </td>
                                <td >
                                    <h4 style="text-align:center">GATE PASS</h4>
                                    <!-- <h4 style="text-align:center"><span t-field="o.name"/></h4> -->
                                </td>
                                <td  style="float: right;">
                                    <h5 style="margin-bottom: 1rem; text-align: right;">&amp;nbsp;</h5>
                                    <h5 style="text-decoration: underline; font-weight:bold;">Date: <t  t-esc="datetime.date.today().strftime('%d/%m/%Y')"/></h5>
                                </td>

                            </tr>
                        
                            </table>
                        </body>
                </table>
                <table  style="margin-top:30px;width: 100%;" cellspacing="0">
                    <tr>
                        <td colspan="11">
                            <table class="" style="margin-bottom: 0;margin-bottom: 0; width: 100%; border: 1px solid #dee2e6;" cellpadding="0">
                                <tr>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important; width:20%;">PO No </td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;"><span t-field="o.origin" /></td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">PO Date</td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;"><span t-field="o.po_date"  t-options='{"format": "dd/MM/yyyy"}'/></td>
                                    
                                </tr> 
                                <tr>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important; width:20%;">Truck/Wagon No.</td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">OD02AQ6182</td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">NA</td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">NA</td>
                                    
                                </tr>    
                                <tr>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">
                                        Supplied By
                                    </td>
                                    <td style="width:17%;padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">
                                        <span t-field="o.partner_id"/>
                                    </td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">
                                        Deliver To
                                    </td>
                                    <td style="width:17%;padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">
                                        <span t-field="o.company_id"/>
                                    </td>
                                   
                                </tr>
                                <tr>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">
                                        ADDRESS
                                    </td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;width:40%">
                                        <span t-field="o.partner_id.street" />
                                        <span t-field="o.partner_id.street2" />,
                                        <span t-field="o.partner_id.city" />,
                                        <span t-field="o.partner_id.state_id" />,
                                        <span t-field="o.partner_id.country_id" />
                                        <span t-if="o.partner_id.vat">
                                            <t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/>
                                        </span>
                                    </td>    
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;">
                                        ADDRESS
                                    </td>
                                    <td style="padding:3px!important; border: 1px solid #dee2e6; vertical-align:top!important;width:40%">
                                        <span t-field="o.company_id.street" />
                                        <span t-field="o.company_id.email" />,
                                        <span t-field="o.company_id.phone" />,
                                        <span t-field="o.company_id.website" />,
                                        <span t-field="o.partner_id.country_id" />
                                        <span t-if="o.partner_id.vat">
                                            <t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/>
                                        </span>
                                    </td>    
                                </tr>
                            </table>
                        </td>
                        
                    </tr>
                    
                    <table  style="margin-top:30px;width: 100%;" cellspacing="0"></table>
                    <tr style="margin-top:30px;">
                        <td colspan="11">
                            <table class="" cellspacing="0" style="margin:10px 0;width:100%; border: 1px solid black; ">
                                <tr>
                                    <td style="font-weight: bold; width:2%; border: 1px solid black;padding:3px!important; vertical-align:top!important;" >Sl.#</td>
                                    <td style="font-weight: bold; width:10%; border: 1px solid black;padding:3px!important; vertical-align:top!important;">Item Code</td>
                                    <td style="font-weight: bold; width:70%; border: 1px solid black; padding:3px!important; vertical-align:top!important;">Description</td>
                                    <td style="font-weight: bold; width:5%; border: 1px solid black;padding:3px!important; vertical-align:top!important;">UOM</td>
                                    <td style="font-weight: bold; width:10%; border: 1px solid black;padding:3px!important; vertical-align:top!important;">PO Qty.</td>
                                </tr>
                                <t t-set="i" t-value="1" />
                                <t t-set="grand_total" t-value="0"/>
                                <t t-set="tax_total" t-value="0"/>
                                <t t-set="acc_total" t-value="0"/>
                                <t t-set="move_data" t-value="o.move_ids_without_package.filtered(lambda r:not r.scrapped)"/>
                                <t t-foreach="range(len(move_data.ids))" t-as="j">
                                    <t t-set="move" t-value="move_data[j:j+1]"/>
                                    
                                    <tr>
                                        <td style="width:2%; border: 1px solid black; padding:3px!important; vertical-align:top!important;" >
                                            <t t-esc="i"/>
                                        </td>
                                        <td style="width:10%; border: 1px solid black;padding:3px!important; vertical-align:top!important;">
                                            <span t-if="move" t-esc="move.product_id.code"/>
                                        </td>
                                        <td style="width:70%; border: 1px solid black;padding:3px!important; vertical-align:top!important;">
                                            <span t-if="move" t-esc="move.name"/>
                                        </td>
                                        <td style="width:5%; border: 1px solid black;padding:3px!important; vertical-align:top!important;">
                                            <span t-if="move" t-esc="move.product_uom.name"/>
                                        </td>
                                        <td style="text-align: right; width:10%; border: 1px solid black; padding:3px!important; vertical-align:top!important;">
                                            <span t-if="move" t-esc="'%.3f'% move.product_uom_qty"/> 
                                        </td>
                                        
                                    </tr>
                                    <t t-set="i" t-value="i+1"/>
                                </t>                      
                                
                            </table>
                            <table class="" cellspacing="0" style="margin-top:30px;width:100%; ">
                                <tr>
                                    <td><div style="height: 80px;">&amp;nbsp;</div></td>
                                </tr>
                            </table>
                            <table style="margin-top:100px;width:100%;" cellspacing="0">
                                <tr>
                                    <td style="text-align: left;">Recieved By</td>
                                  
                                    <td colspan="3"></td>
                                     <td style="text-align: center;">Verified By</td>
                                
                                    <td colspan="4"></td>
                                    <td style="text-align: right;">Authorised By</td>
                                
                                </tr>
                            </table>
                        </td>
                    </tr>      
                </table>
            </t>
        </t>
    </template>

    
    <template id="report_gatepass">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="kw_inventory.report_gatepass_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
