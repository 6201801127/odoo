<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- explicit list view definition -->

		<record model="ir.ui.view" id="kw_info_list_view">
			<field name="name">About Us</field>
			<field name="model">kw_release_notes</field>
			<field name="arch" type="xml">
				<tree>
					<field name="title"/>
					<field name="date"/>
				</tree>
			</field>
		</record>

		<!-- explicit form view definition -->

		<record model="ir.ui.view" id="kw_info_form_view">
			<field name="name">About Us</field>
			<field name="model">kw_release_notes</field>
			<field name="arch" type="xml">
				<form string="Release Note Form">
					<sheet>
						<group>
							<field name="title"/>
							<field name="date"/>
							<field name="description"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- actions opening views on models -->

		<record model="ir.actions.act_window" id="kw_info_action_window">
			<field name="name">Release Notes</field>
			<field name="res_model">kw_release_notes</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- Top menu item -->

		<menuitem name="Release Note" id="kw_info_about_us"
		          parent="kw_usability.kw_usability_parent_menu_item"
		          action="kw_info_action_window"/>

	</data>
</odoo>