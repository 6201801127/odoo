<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="kw_release_note" name="Kwantify Releases">
            <t t-call="website.layout">
	            <section class="kw_homepage">
					<div class="oe_structure">
						<div class="row align-items-center">
							<div class="container">
								<div class="col-sm-2 pull-left">
									<!-- Nav tabs -->
									<ul class="nav nav-tabs" id="myTab" role="tablist">
										<t t-foreach="release_notes" t-as="release_note">
											<li class="nav-item col-sm-12">
												<a t-if="release_note_index==0" class="nav-link active" id="home-tab"
												   data-toggle="tab" t-att-href="'#mdfilewrapper_'+str(release_note.id)"
												   role="tab" aria-controls="home" aria-selected="true">
													<t t-esc="release_note.title"/>
												</a>

												<a t-else="" class="nav-link" id="home-tab" data-toggle="tab"
												   t-att-href="'#mdfilewrapper_'+str(release_note.id)" role="tab"
												   aria-controls="home" aria-selected="true">
													<t t-esc="release_note.title"/>
												</a>
											</li>
										</t>
									</ul>
								</div>
								<div class="col-sm-10 pull-left">
									<div class="tab-content">
										<t t-foreach="release_notes" t-as="release_note">
											<div t-if="release_note_index==0"
											     t-att-id="'mdfilewrapper_' +str(release_note.id)"
											     class="md_result tab-pane active" role="tabpanel"></div>

											<div t-else="" t-att-id="'mdfilewrapper_' +str(release_note.id)"
											     class="md_result tab-pane " role="tabpanel"></div>

											<div t-att-id="str(release_note.id)" class="md_source"
											     style="display:none;">
												<t t-raw="release_note.description"/>
											</div>
										</t>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
            </t>
        </template>
    </data>
</odoo>