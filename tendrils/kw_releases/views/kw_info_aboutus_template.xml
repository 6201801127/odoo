<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="kw_release_note_template" name="kw_releases.kw_release_note_template">
			<t t-call="website.layout">
				<section class="kw_homepage">
					<div class="oe_structure">
						<div class="row align-items-center">
							<div class="container">
								<div class="col-sm-2 pull-left">
									<!-- Nav tabs -->
									<ul class="nav nav-tabs" id="myTab" role="tablist">
										<t t-foreach="release_notes" t-as="release_note">
											<li class="nav-item">
												<a t-if="release_note_index==0" class="nav-link active" id="home-tab"
												   data-toggle="tab" t-att-href="'#mdfilewrapper_'+str(release_note.id)"
												   role="tab" aria-controls="home" aria-selected="true">
													<t t-esc="release_note.title"/>
												</a>

												<a t-else="" class="nav-link" id="home-tab" data-toggle="tab"
												   t-att-href="'#mdfilewrapper_'+str(release_note.id)" role="tab"
												   aria-controls="home" aria-selected="true">
													<t t-esc="release_note.title"/>
												</a>
											</li>
										</t>
									</ul>
								</div>
								<div class="col-sm-10 pull-left">
									<div class="tab-content">
										<t t-foreach="release_notes" t-as="release_note">
											<div t-if="release_note_index==0"
											     t-att-id="'mdfilewrapper_' +str(release_note.id)"
											     class="md_result tab-pane active" role="tabpanel"></div>

											<div t-else="" t-att-id="'mdfilewrapper_' +str(release_note.id)"
											     class="md_result tab-pane " role="tabpanel"></div>

											<div t-att-id="str(release_note.id)" class="md_source"
											     style="display:none;">
												<t t-raw="release_note.description"/>
											</div>
										</t>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</t>
		</template>

		<record id="releasenote_page" model="website.page">
			<field name="name">Release Note Page</field>
			<field name="website_published">True</field>
			<field name="url">/release-note</field>
			<field name="view_id" ref="kw_release_note_template"/>
		</record>

		<record id="kw_releasenote_page_link" model="website.menu">
			<field name="name">Release Notes</field>
			<field name="page_id" ref="releasenote_page"/>
			<field name="parent_id" ref="website.main_menu"/>
			<field name="sequence" type="int">99</field>
		</record>

		<template id="kw_release_note_asset" name="Kwantify Release Note Assets" inherit_id="website.assets_frontend">
			<xpath expr="." position="inside">
				<link rel="stylesheet" type="text/css" href="/kw_releases/static/src/css/markdown.css"/>
				<script type="text/javascript" src="/kw_releases/static/src/lib/showdown.js"></script>
				<script type="text/javascript" src="/kw_releases/static/src/js/markdown.js"></script>
			</xpath>
		</template>
	</data>
</odoo>