<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="lost_found_report_form_view">
            <field name="name">Lost and Found Report</field>
            <field name="model">lost_found_reports</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date" autocomplete="off"/>
                            </group>
                            <group>
                                <field name="to_date" autocomplete="off"/>
                            </group>
                        </group>
                        <footer>
                            <center>
                                <button string='Get Report' name="get_lost_found_report" type="object" class="btn btn-success btn-lg"/>
                                <button string="Cancel" class="btn btn-danger btn-lg" special="cancel" style="margin-left: 10px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="lost_found_wizard_report_action_window">
            <field name="name">Lost &amp; Found Report</field>
            <field name="res_model">lost_found_reports</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>