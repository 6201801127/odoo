<odoo>
    <data>
      <record model="ir.ui.view" id="kw_spoc_master_list">
        <field name="name">SPOC Master List</field>
        <field name="model">spoc_master_lnf</field>
        <field name="arch" type="xml">
          <tree editable="top">
                <field name="office_location_id" options="{'no_open':True,'no_create':True,'no_edit': True}" />
                <field name="employee_id" options="{'no_open':True,'no_create':True,'no_edit': True}" string="SPOC" />
          </tree>
        </field>
      </record>

      <record id="view_kw_spoc_master_search" model="ir.ui.view">
            <field name="name">view.kw_device_master.search</field>
            <field name="model">spoc_master_lnf</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="spoc_master_lnf_search">
                    <field name="office_location_id" />
                </search>
            </field>
        </record>
  
      <!-- actions opening views on models -->
      
      <record model="ir.actions.act_window" id="kw_spoc_master_action_window">
        <field name="name">SPOC Master</field>
        <field name="res_model">spoc_master_lnf</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
      </record>


    </data>
  </odoo>