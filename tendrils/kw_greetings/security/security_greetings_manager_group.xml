        <record model="ir.module.category" id="module_category_kw_greetings">
            <field name="name">Greetings</field>
            <field name="description">User access level for this module</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_kw_greetings_viewer" model="res.groups">
            <field name="name">Viewer</field>
            <field name="category_id" ref="kw_greetings.module_category_kw_greetings"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_kw_greetings_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_greetings.module_category_kw_greetings"/>
