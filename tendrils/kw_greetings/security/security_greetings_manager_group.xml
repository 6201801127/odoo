            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
                <field name="groups_id" eval="[(4,ref('kw_greetings.group_kw_greetings_viewer'))]"/>
        </record>

        <record id="kw_greetings_manager_rule" model="ir.rule">
            <field name="name">Greetings Manager Group</field>
            <field name="model_id" ref="model_kw_greetings_send_wishes"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_kw_greetings_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>


