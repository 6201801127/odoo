<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="kwgreetings_birthday_category" model="kw_greetings_category">
            <field name="name">Birth Day</field>            
        </record>

        <record id="kwgreetings_anniversary_category" model="kw_greetings_category">
            <field name="name">Anniversary</field>            
        </record>

        <record id="kwgreetings_year_of_service_category" model="kw_greetings_category">
            <field name="name">Year of Service</field>            
        </record>

        <record id="kwgreetings_well_wishes_category" model="kw_greetings_category">
            <field name="name">Well Wishes</field>
        </record>

        <!--Default Config Setting for categories -->

         <!-- activate categories by default -->
        <function model="ir.config_parameter" name="set_param" eval="('kw_greetings.greetings_birthday_category', ref('kw_greetings.kwgreetings_birthday_category'))"/>
        <function model="ir.config_parameter" name="set_param" eval="('kw_greetings.greetings_anniversary_category', ref('kw_greetings.kwgreetings_anniversary_category'))"/>
        <function model="ir.config_parameter" name="set_param" eval="('kw_greetings.greetings_year_of_service_category', ref('kw_greetings.kwgreetings_year_of_service_category'))"/>
        <function model="ir.config_parameter" name="set_param" eval="('kw_greetings.greetings_well_wish_category', ref('kw_greetings.kwgreetings_well_wishes_category'))"/>
       
    </data>
</odoo>
