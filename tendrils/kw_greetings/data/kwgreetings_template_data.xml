<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="kwgreetings_birthday_template" model="kw_greetings_template">
			<field name="category_id" ref="kw_greetings.kwgreetings_birthday_category"/>
			<field name="subject">Happy Birth Day</field>
			<field name="name">Default template for Happy Birth Day</field>
			<field name="message">Many many happy returns of the day</field>
			<field name="is_default">True</field>

			<field name="template_body">
				<![CDATA[
                    <div class="emp_birthday">
                            <div class="content h1">${object.subject} </div>
                            <br/>
                            <div class="message"><p>  ${object.message} </p></div>
                    </div>
                ]]>
			</field>
		</record>

