<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.greetings</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="70"/>
		<field name="inherit_id" ref="base.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Greetings" string="Greetings" data-key="kw_greetings"
				     groups="hr.group_hr_manager">
					<h2>Default Greetings Category Settings</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<span class="o_form_label">Birthday</span>
								<div class="text-muted">
									Set the default category for birthday wishes
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="greetings_birthday_category" string="Category"
										       class="col-3 col-lg-3 o_light_label"/>
										<field name="greetings_birthday_category" class="oe_inline" required="1"/>
									</div>
								</div>
							</div>
						</div>

						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<span class="o_form_label">Year of Service</span>
								<div class="text-muted">
									Set the default category for year of services wishes
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="greetings_year_of_service_category" string="Category"
										       class="col-3 col-lg-3 o_light_label"/>
										<field name="greetings_year_of_service_category" class="oe_inline"
										       required="1"/>
									</div>
								</div>
							</div>
						</div>

						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<span class="o_form_label">Anniversary</span>
								<div class="text-muted">
									Set the default category for anniversary
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="greetings_anniversary_category" string="Category"
										       class="col-3 col-lg-3 o_light_label"/>
										<field name="greetings_anniversary_category" class="oe_inline" required="1"/>
									</div>
								</div>
							</div>
						</div>

						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<span class="o_form_label">Well Wishes</span>
								<div class="text-muted">
									Set the default category for well wishes
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="greetings_well_wish_category" string="Category"
										       class="col-3 col-lg-3 o_light_label"/>
										<field name="greetings_well_wish_category" class="oe_inline" required="1"/>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

	<record id="kw_greetings_config_settings_action" model="ir.actions.act_window">
		<field name="name">Settings</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.config.settings</field>
		<field name="view_mode">form</field>
		<field name="target">inline</field>
		<field name="context">{'module' : 'kw_greetings'}</field>
	</record>
</odoo>
