<odoo>
	<data>
		<!-- explicit list view definition -->

		<record model="ir.ui.view" id="kw_greeting_template_list">
			<field name="name">Greeting Templates</field>
			<field name="model">kw_greetings_template</field>
			<field name="arch" type="xml">
				<tree import="false">
					<field name="category_id" string="Category" groups = "kw_greetings.group_kw_greetings_manager"/>
					<field name="name" string="Title" groups = "kw_greetings.group_kw_greetings_manager"/>
					<field name="subject" string="Subject" groups = "kw_greetings.group_kw_greetings_manager"/>
					<field name="is_default" string="Default Template" groups = "kw_greetings.group_kw_greetings_manager"/>
					<!-- <field name="template_preview" string="Template"></field> class="oe_highlight "-->
					<button class="btn btn-info" name="button_preview_template" type="object" string="Preview" groups = "kw_greetings.group_kw_greetings_manager"/>
				</tree>
			</field>
		</record>
		<!-- explicit form view definition -->
		<record id="kw_greeting_template_view_form" model="ir.ui.view">
			<field name="name">Greeting Templates</field>
			<field name="model">kw_greetings_template</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="category_id" string="Category"/>
							<field name="name" string="Title"/>
							<field name="subject" string="Subject"/>
							<field name="message" string="Messages"/>
							<field name="is_default"/>
							<field name="template_body"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>


		<record id="kw_greeting_template_preview_view_form" model="ir.ui.view">
			<field name="name">Template Preview</field>
			<field name="model">kw_greetings_template</field>
			<field name="priority" eval="99"/>
			<field name="arch" type="xml">
				<form create="false" edit="false">
					<sheet>
						<field name="template_preview"/>
					</sheet>
				</form>
			</field>
		</record>


		<record id="view_kw_greetings_template_filter" model="ir.ui.view">
			<field name="name">kw_greetings_template_filter_records</field>
			<field name="model">kw_greetings_template</field>
			<field name="arch" type="xml">
				<search string="Search Template">
					<field name="subject"/>
					<field name="category_id"/>
					<group expand="1" string="Group By">
						<filter string="Category" name="category" context="{'group_by':'category_id'}"/>
					</group>
				</search>
			</field>
		</record>

		<!-- actions opening views on models -->

		<record model="ir.actions.act_window" id="kw_greeting_template_action_window">
			<field name="name">Template Master</field>
			<field name="res_model">kw_greetings_template</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>