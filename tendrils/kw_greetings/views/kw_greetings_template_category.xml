<odoo>
	<data>
		<!-- explicit list view definition -->
		<record model="ir.ui.view" id="kw_category_list">
			<field name="name">Category</field>
			<field name="model">kw_greetings_category</field>
			<field name="arch" type="xml">
				<tree import="false">
					<field name="name" string="Name" groups = "kw_greetings.group_kw_greetings_manager"/>
				</tree>
			</field>
		</record>
		<!-- explicit form view definition -->
		<record id="kw_Category_form_view" model="ir.ui.view">
			<field name="name">Category</field>
			<field name="model">kw_greetings_category</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" string="Name"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- actions opening views on models -->

		<record model="ir.actions.act_window" id="kw_category_action_window">
			<field name="name">Categories</field>
			<field name="res_model">kw_greetings_category</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- Top menu item -->
		<!-- <menuitem name="Add well wishes" id="kw_add_well_wish_parent_menu"/> -->
	</data>
</odoo>