<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="kw_recruitment_calendar.recruitment_budget_plan">
		<div class="container-fluid mt-5">
			<div class="table-responsive">
                <div class="card">
	                <div class="card-body">
	                    <h3 class="text-center mt-2 mb-4">Recruitment Budget Plan</h3>
		                <div class="row">
		                    <div class="col-sm-10">
			                    <div class="row form-group">
			                        <div class="col-sm-4">
                                        <label for="recruitment_fiscal_year" class="mdb-main-label">Fiscal Year:</label>
				                        <select class="form-control" id="recruitment_fiscal_year">
											<option></option>
                                        </select>
                                    </div>
				                    <div class="col-sm-4"></div>

                                </div>
                            </div>
			                <div class="col-sm-2">
			                    <button class="btn btn-primary" id="btn_rec_calendar_budget_save">Save Budget</button>
		                    </div>
                        </div>
	                </div>

                </div>
				<div class="card mt-4">
	                <div class="card-body">
						<div id="recr_budget_loader">
		                    <h2><center>Loading...</center></h2>
		                </div>
		                <div id="recr_budget_no_record" class="o_hidden">
