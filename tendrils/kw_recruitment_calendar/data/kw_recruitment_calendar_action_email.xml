<?xml version="1.0" encoding="utf-8"?>
<data>
   <odoo>
        <record id="recruitment_calendar_action_template" model="mail.template">
            <field name="name">MRF : Recruitment Calendar | ${ctx['action']}</field>
            <field name="model_id" ref="kw_recruitment_calendar.model_kw_recruitment_positions"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${object.env.user.email or ''}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
            <field name="subject">Recruitment Calendar Request ${ctx['action']} | Ref No - ${object.code}</field>
            <field name="body_html">
                <![CDATA[

                    <div style="padding-left: 20px;">
                        <p>
                            <b>
                            <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Dear </span>
                            <span style="font-size: 18px;">${ctx['requester']},</span>
                            </b>
                        </p>
                        <p style="font-size: 17px;">
                            Recruitment Calendar Request for the Reference No - ${object.code}. has been ${ctx['action']} by ${object.env.user.employee_ids.name}.
                        </p>
                    </div>
                    %if object.status == 'publish':
                        <p style="padding: 0px 24px 0px;color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><strong>Calendar Details:</strong></p>
                            <table style="padding: 0px 24px 0px;" class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    <tr>
                                        <td style="width: 30%;"><strong>Calendar Ref.</strong></td>
                                        <td style="width: 25%;"><strong>Budget Ref.</strong></td>
                                        <td style="width: 22%;"><strong>Department</strong></td>
                                        <td style="width: 15%;"><strong>Tech</strong></td>
                                        <td><strong>Position</strong></td>
                                        <td><strong>Location</strong></td>
                                    </tr>
                                    % for data in ctx['datas']:
                                        <tr>
                                            <td>
                                                ${data.code}
                                            </td>
                                            <td>
                                                ${data.parent_ref_id.code}
                                            </td>
                                            <td>
                                                ${data.dept_id.name}
                                            </td>
                                            <td>
                                                ${data.technology.name}
                                            </td>
                                            <td>
                                                % if data.designation:
                                                ${data.designation.name}
                                                % else:
                                                    NA
                                                % endif
                                            </td>
                                            <td>
                                                ${data.branch_id.name}
                                            </td>
                                        </tr>

                                    % endfor

                                </tbody>
                            </table>
                    %endif
                    <br/>
                    <div style="font-size: 15px;padding-left:20px;">
                        <p>Thanks &amp; Regards</p>
                        % if object.employee_id and object.employee_id.user_id.signature:
                            ${object.employee_id.user_id.signature | safe}
                        % else:
                            ${object.employee_id.name | safe}
                        % endif
                    </div>
                ]]>
            </field>
            <field name="user_signature" eval="False"/>
        </record> 

        <record id="recruitment_budget_action_template" model="mail.template">
            <field name="name">MRF : Recruitment Calendar | ${ctx['action']}</field>
            <field name="model_id" ref="kw_recruitment_calendar.model_kw_recruitment_budget_lines"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${object.env.user.email or ''}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
            <field name="subject">Recruitment Budget ${ctx['action']} | Ref No - ${object.code}</field>
            <field name="body_html">
                <![CDATA[

                    <div style="padding-left: 20px;">
                        <p>
                            <b>
                            <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Dear </span>
                            <span style="font-size: 18px;">${ctx['requester']},</span>
                            </b>
                        </p>
                        <p style="font-size: 17px;">
                            Recruitment Budget for the Reference No - ${object.code}. has been ${ctx['action']} against the Calendar reference No - ${object.parent_ref_id.code} 
                            by ${object.env.user.employee_ids.name}.
                        </p>
                    </div>
                    <br/>
                    <div style="font-size: 15px;padding-left:20px;">
                        <p>Thanks &amp; Regards</p>
                        % if object.employee_id and object.employee_id.user_id.signature:
                            ${object.employee_id.user_id.signature | safe}
                        % else:
                            ${object.employee_id.name | safe}
                        % endif
                    </div>
                ]]>
            </field>
            <field name="user_signature" eval="False"/>
        </record>   
    </odoo>
</data>