<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="treasury_budget_approval_wizard_form" model="ir.ui.view">
        <field name="name">treasury_budget_approval_wizard Form</field>
        <field name="model">treasury_budget_approval_wizard</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <div>
                        <p style="font-size:16px;">
                            <center> You have selected the budget lines of the following states
                                (<field name="budget_line_status" readonly='1'/>).
                                Are you sure,you want to approve the selected records.?
                            </center>
                        </p>

                    </div>
                </sheet>
                <footer>    
                    <button string="Approve" name="approve_budget_ids" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
        </record>



    <act_window id="approve_budget_ids_action_window" name="Approve Budget" src_model="kw_recruitment_budget_lines" 
        res_model="treasury_budget_approval_wizard" view_mode="form" view_type="form" view_id="treasury_budget_approval_wizard_form" 
        context="{'budget_approval_ids': active_ids}" key2="client_action_multi" target="new" groups="kw_recruitment.group_tag_budget_user"/>
        
    <record id="treasury_budget_decline_wizard_form" model="ir.ui.view">
        <field name="name">treasury_budget_decline_wizard Form</field>
        <field name="model">treasury_budget_decline_wizard</field>
        <field name="priority">210</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <div>
                        <p style="font-size:16px;">
                            <center> You have selected the budget lines of the following states 
                                (<field name="budget_line_status" readonly='1'/>).
                                    Are you sure,you want to reject the selected records.?
                            </center>
                        </p>
						
                    </div>
                </sheet>
                <footer>    
                    <button string="Reject" name="decline_budget_ids" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    
    
    
    <act_window id="decline_budget_ids_action_window" name="Reject Budget" src_model="kw_recruitment_budget_lines" 
        res_model="treasury_budget_decline_wizard" view_mode="form" view_type="form" view_id="treasury_budget_decline_wizard_form" 
        context="{'budget_decline_ids': active_ids}" key2="client_action_multi" target="new" groups="kw_recruitment.group_tag_budget_user"/>
    </data>
</odoo>