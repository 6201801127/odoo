        <record id="kw_recruitment_treasury_budget_line_view_tree" model="ir.ui.view">
            <field name="name">kw_recruitment_treasury_budget_line.view.tree</field>
            <field name="model">kw_recruitment_treasury_budget_line</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" import="false">
                    <field name="fiscalyr" options="{'no_create': True,'no_open': True}"/>
                    <field name="name" invisible='1'/>
                    <field name="department_id"  options="{'no_create': True,'no_open': True}" readonly="1"/>
                    <field name="total_planned" sum="Total [Planned]" />
                    <field name="total_incurred" sum='Total incurred' />
                    <field name="total_remaining" sum="Total Remaining" />
                    <button name="action_view_department_budgets" type="object"  string='View Budget' context="{'budget_id':department_id}" class="btn-success"/>
                </tree>
            </field>
        </record>

        <record id="kw_recruitment_treasury_budget_lines_action" model="ir.actions.act_window">
            <field name="name">Departmentwise Budget</field>
            <field name="res_model">kw_recruitment_treasury_budget_line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
             <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_recruitment_calendar.kw_recruitment_treasury_budget_line_view_tree')})]"/>
        </record>

        <record id="kw_recruitment_treasury_budget_lines_server_action" model="ir.actions.server">
			<field name="name">Treasury Budget</field>
			<field name="model_id" ref="model_kw_recruitment_treasury_budget_line"/>
			<field name="state">code</field>
			<field name="code">
				action = model.redirect_department_budget()
			</field>
		</record>

       
    
