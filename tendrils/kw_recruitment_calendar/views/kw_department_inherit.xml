<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="department_budget_kanban" model="ir.ui.view">
            <field name="name">Department Budget Kanban</field>
            <field name="model">hr.department</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_hr_recruitment_kanban">
                    <field name="name" readonly='1'/>
                    <field name="total_planned" readonly='1'/>
                    <field name="total_incurred" readonly='1'/>
                    <field name="total_remaining" readonly='1'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card_content oe_kanban_global_click" style="height:200px;">
                                <table class="table table-borderless">
                                    <tr style="font-size:10px;">
                                        <td style="width:40%;">
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-user-o"/>
                                            <b>&amp;nbsp;&amp;nbsp;Department</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="name" readonly='1'/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:10px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-check-square-o"/>
                                            <b>&amp;nbsp;&amp;nbsp;Total Planned</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="total_planned" readonly='1'/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:10px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-phone"/>
                                            <b>&amp;nbsp;&amp;nbsp;Total Incurred</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="total_incurred" readonly='1'/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:10px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-envelope"/>
                                            <b>&amp;nbsp;&amp;nbsp;Total Remaining</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="total_remaining" readonly='1'/>
                                        </td>
                                    </tr>
                                </table>
                                <div class="col-4 text-right">
                                    <button class="btn btn-primary " name="view_department_buget" type="object"  t-attf-data-context="{'budget_dept_id':active_id}">
                                        <!-- <span>
                                            <field name="application_count"/>
                                        </span> -->
                                        View Details(s)
                                    </button>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
       <record id="department_budget_kanban_action_window" model="ir.actions.act_window">
           <field name="name">Department Budget</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">hr.department</field>
           <field name="view_mode">kanban</field>
           <field name="domain">[]</field>
           <field name="context">{'create': False,'edit': True,'delete':False,'import':False, }</field>
           <field name="view_type">form</field>
           <field name="view_ids" eval="[(5, 0, 0),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_recruitment_calendar.department_budget_kanban')})]"/>
       </record>
    </data>
</odoo>
