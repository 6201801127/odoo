<?xml version="1.0"?>
<odoo>
	<record model="ir.ui.view" id="kw_recruitment_project_budget_lines_tree">
		<field name="name">Recruitment Project calender Details</field>
		<field name="model">kw_recruitment_project_budget_lines</field>
		<field name="arch" type="xml">
            <tree editable="top" class="rc-budget" create="true" import="true">
				<field name="code" readonly='1'/>
				<field name="branch_id"  readonly="0" options="{'no_create': True,'no_open': True}" invisible="1"/>
				<field name="dept_id"  options="{'no_create': True,'no_open': True}" readonly="0" invisible="1"/>
				<field name="division"  readonly="0" options="{'no_create': True,'no_open': True}" invisible="1"/>
				<field name="section"   readonly="0" options="{'no_create': True,'no_open': True}" invisible="1"/>
				<field name="parent_ref_id"   readonly="0" options="{'no_create': True,'no_open': True}"/>
				<field name="project"  readonly="0" options="{'no_create': True,'no_open': True}" />
                <!-- <field name="name" readonly="0" string="Designation"/> -->
				<field name="designation"  readonly="0" options="{'no_create': True,'no_open': True}" invisible="0"/>
				<field name="technology"  readonly="0" options="{'no_create': True,'no_open': True}"/>
				<field name="exp_year" readonly="0"/>
				<field name="type_of_project"  readonly="0" options="{'no_create': True,'no_open': True}" invisible="1" />
				<field name="resource_type"  readonly="0" options="{'no_create': True,'no_open': True}" invisible="1"/>
				<field name="qualification_ids" readonly="0" widget="many2many_tags" invisible="1"/>
                <field name="employee_id" readonly="0" options="{'no_create': True,'no_open': True}" invisible="1"/>
                <field name="resource" readonly="0"/>
				<field name="hiring_status" readonly="0"/>
				<field name="apr_budget"  force_save="1"/>
				<field name="may_budget"  force_save="1"/>
				<field name="jun_budget"  force_save="1"/>
				<field name="jul_budget"  force_save="1"/>
				<field name="aug_budget"  force_save="1"/>
				<field name="sep_budget"  force_save="1"/>
				<field name="octo_budget" force_save="1"/>
				<field name="nov_budget"  force_save="1"/>
				<field name="dec_budget"  force_save="1"/>
				<field name="jan_budget"  force_save="1"/>
				<field name="feb_budget"  force_save="1"/>
				<field name="mar_budget"  force_save="1"/>
				<field name="planned_month" invisible="1"/>
				<field name="total_budget" invisible="0" string="Total [Planned]" sum="Total [Planned]" widget="Monetary" force_save="1"/>
				<field name="resource_joined" options="{'no_create': True,'no_open': True}"/>
				<field name="resource_tobe_joined" options="{'no_create': True,'no_open': True}"/>
				<field name="total_incurred" readonly="0" force_save="1"/>
				<field name="total_remaining" readonly="0" sum="Total Remaining" widget="Monetary" force_save="1"/>
			</tree>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_kw_recruitment_project_budget_lines">
		<field name="name">Project Budget</field>
		<field name="res_model">kw_recruitment_project_budget_lines</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
		<field name="view_type">form</field>
	</record>


	<!-- <menuitem parent="kw_recruitment_calendar_menu" sequence="5" id="kw_recruitment_calendar_project_budget_plan_menu"
	          name="Project Budget" action="action_kw_recruitment_project_budget_lines"
              groups="hr_recruitment.group_hr_recruitment_manager"/> -->


</odoo>
