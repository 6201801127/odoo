<?xml version="1.0"?>
<odoo>
	<record model="ir.ui.view" id="kw_recruitment_budget_lines_resource_tagging_tree">
		<field name="name">Resource Tagging Details</field>
		<field name="model">kw_recruitment_budget_lines</field>
        <field name="priority">15</field>
		<field name="arch" type="xml">
            <tree create='false' edit='false'>
                <field name="name" readonly="1" string="Sequence"/>
                <field name="mrf_id" invisible ="0" options="{'no_create': True,'no_open': True}" readonly='1'/>
				<field name="offer_id" invisible ="0" options="{'no_create': True,'no_open': True}" readonly='1'/>
				<field name="fiscalyr" invisible ="0" options="{'no_create': True,'no_open': True}" readonly='1'/>
				<field name="branch_id"  readonly="1" options="{'no_create': True,'no_open': True}"/>
				<field name="dept_id"  options="{'no_create': True,'no_open': True}" readonly="1"/>
				<field name="division"   readonly='1' options="{'no_create': True,'no_open': True}"/>
				<field name="section"  readonly='1' options="{'no_create': True,'no_open': True}"/>
				<field name="practise"  readonly='1' options="{'no_create': True,'no_open': True}"/>
				<field name="designation"  readonly='1' options="{'no_create': True,'no_open': True}" />
				<field name="type_of_project"  readonly='1' options="{'no_create': True,'no_open': True}" />
				<field name="project"  readonly='1' options="{'no_create': True,'no_open': True}" />
				<field name="resource_type"  readonly='1' options="{'no_create': True,'no_open': True}" />
				<field name="technology"  readonly='1' options="{'no_create': True,'no_open': True}"/>
				<field name="exp_year" readonly='1' />
				<field name="qualification_ids" widget="many2many_tags" readonly='1' />
                <field name="resource" readonly="1"/>
				<field name="hiring_status" readonly='1' />
				<field name="planned_month" invisible="1"/>
                <field name="total_budget" invisible="0" string="Total [Planned]" sum="Total [Planned]" widget="monetary" force_save="1"/>
				<field name="resource_joined" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('status','=','draft')]}"/>
				<field name="resource_tobe_joined" options="{'no_create': True,'no_open': True}" readonly='1'/>
				<field name="total_incurred" readonly="1" force_save="1" sum='Total incurred'/>
				<field name="total_remaining" readonly="1" sum="Total Remaining" widget="monetary" force_save="1"/>
				<field name="department_sequence" invisible='1'/>
                <field name="status" readonly="1"/>

			</tree>
		</field>
	</record>

	
	

	<record model="ir.actions.act_window" id="kw_recruitment_budget_lines_resource_tagging_action">
		<field name="name">Resource Tagging</field>
		<field name="res_model">kw_recruitment_budget_lines</field>
		<field name="view_mode">tree</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
        <field name="view_id" ref="kw_recruitment_budget_lines_resource_tagging_tree"/>
		<field name="view_type">form</field>
	</record>


    
</odoo>