<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="group_kw_calendar_user" model="res.groups">
			<field name="name">Recruitment Calendar</field>
			<field name="category_id" ref="base.module_category_hr_recruitment"/>
		</record>
		<record id="group_kw_recruitment_calendar_user" model="ir.rule">
			<field name="name">CRED user recruitment plan</field>
			<field name="model_id" ref="model_kw_recruitment_positions"/>
			<field name="domain_force">[('create_uid','=',user.id)]</field>
			<field name="perm_read" eval="True"/>
			<field name="perm_create" eval="True"/>
			<field name="perm_write" eval="True"/>
			<field name="perm_unlink" eval="False"/>
			<field name="groups" eval="[(4, ref('kw_recruitment_calendar.group_kw_calendar_user'))]"/>
		</record>

		<record model="ir.rule" id="recruitment_plan_rule_manager">
			<field name="name">CRED Manager recruitment plan</field>
			<field name="model_id" ref="model_kw_recruitment_positions"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="perm_read" eval="True"/>
			<field name="perm_create" eval="True"/>
			<field name="perm_write" eval="True"/>
			<field name="perm_unlink" eval="False"/>
			<field name="groups" eval="[(4,ref('hr_recruitment.group_hr_recruitment_manager')),(4,ref('kw_recruitment.group_tag_budget_user')),(4,ref('kw_resource_management.group_budget_manager')),(4,ref('kw_recruitment.group_hr_recruitment_accounts'))]"/>
		</record>

		<record model="ir.rule" id="kw_recruitment_treasury_budget_line_rule">
			<field name="name">CRED Manager recruitment plan</field>
			<field name="model_id" ref="model_kw_recruitment_treasury_budget_line"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="perm_read" eval="True"/>
			<field name="perm_create" eval="False"/>
			<field name="perm_write" eval="False"/>
			<field name="perm_unlink" eval="False"/>
			<field name="groups" eval="[(4,ref('hr_recruitment.group_hr_recruitment_manager')),(4,ref('kw_recruitment.group_tag_budget_user')),(4,ref('kw_recruitment.group_hr_recruitment_accounts')),(4,ref('kw_recruitment.group_kw_budget_report_manager'))]"/>
		</record>

	</data>
</odoo>
