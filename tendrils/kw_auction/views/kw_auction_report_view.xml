<odoo>
  <data>


    <template id="assets_backend" name="Assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/kw_auction/static/src/js/tree_view_buttons.js"></script>
        </xpath>
    </template>


    <record model="ir.ui.view" id="kw_auction_report_list">
      <field name="name">kw_auction_report_list</field>
      <field name="model">kw_auction_report</field>
      <field name="arch" type="xml">
        <tree  import='false'>
          <field name="auction_duration"/>
          <field name="auction_ref_id"/>
          <field name="item_name"/>
          <field name="item_model"/>
          <field name="item_configuration"/>
          <field name="fa_code"/>
          <field name="serial_no"/>
          <field name="used_by_id"/>
          <field name="booked_by_id"/>
          <field name="booked_on"/>
          <field name="reserve_price"/>
          <field name="final_bid"/>
          <field name="state"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="kw_auction_report_search">
      <field name="name">kw_auction_report_search</field>
      <field name="model">kw_auction_report</field>
      <field name="arch" type="xml">
        <search>
          <field name="item_name"/>
          <field name="item_model"/>
          <field name="fa_code"/>
          <field name="serial_no"/>
          <field name="item_configuration"/>
          <field name="booked_on"/>
          <filter string="My Bookings" name="filter_my_bookings" domain="[('booked_by_id.user_id', '=', uid)]" groups='kw_auction.kw_auction_IT_head_group,kw_auction.kw_auction_store_manager_group'/>
          <filter string="Current Month" name="filter_current_month" domain="[('booked_on', '&gt;=', (datetime.datetime.now().strftime('%%Y-%%m-01 00:00:00'))), ('booked_on', '&lt;=', (datetime.datetime.now() + relativedelta(day=31)).strftime('%%Y-%%m-%%d 23:59:59'))]" help="Filter records booked in the current month"/>
          <group expand='0' string="Group By">
            <filter string="Item" name="Item" domain="[]" context="{'group_by':'item_name'}"/>
            <filter string="Model" name="Model" domain="[]" context="{'group_by':'item_model'}"/>
            <filter string="State" name="State" domain="[]" context="{'group_by':'state'}"/>
          </group>
        </search>
      </field>
    </record>


    <record model="ir.actions.act_window" id="kw_auction_report_action_window">
      <field name="name">Auction Report</field>
      <field name="res_model">kw_auction_report</field>
      <field name="view_mode">tree,search</field>
      <field name="view_type">form</field>
      <field name="domain">[]</field>
      <field name="context">{'create': False, 'delete': False, 'copy': False, 'group_by':'state'}</field> 
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              No data to show...
          </p>
      </field>
    </record>
    

  </data>
</odoo>