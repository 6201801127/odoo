<odoo>
  <data>
  

    <record model="ir.ui.view" id="kw_auction_date_master_list">
      <field name="name">kw_auction_date_master_list</field>
      <field name="model">kw_auction_date_master</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date_from"/>
          <field name="date_to"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="kw_auction_date_master_form">
      <field name="name">kw_auction_date_master_form</field>
      <field name="model">kw_auction_date_master</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
                <div style="text-align: center;">
                    <h1>
                        <field name="date_from" placeholder="Date from" class="oe_inline" nolabel="1" required="1"/>
                        <span style="color: #f56127"> TO </span>
                        <field name="date_to" placeholder="Date to" class="oe_inline" nolabel="1" required="1"/>
                    </h1>
                </div>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.actions.act_window" id="kw_auction_date_master_action_window">
      <field name="name">Auction Date</field>
      <field name="res_model">kw_auction_date_master</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              Configure a duration for auction...
          </p>
      </field>
    </record>
    

  </data>
</odoo>