<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kw_auction_it_declaration_form" model="ir.ui.view">
        <field name="name">kw_auction_it_declaration_form</field>
        <field name="model">kw_auction_it_declaration</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <div class="d-flex justify-content-center">
                        <div class="col-12 col-7 text-left">
                            <p class="h2" style="color: black; margin-top: 20px;">
                                Bid Amount
                            </p>
                            <div class="form-group" style="margin-bottom: 20px;">
                                <div style="display: flex; align-items: center;">
                                    <field name="bid_amount" required="1" class="o_input" style="flex: 1; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;"/>
                                </div>
                            </div>
                            <p class="h1" style="color: black; text-align: center;">
                                Declaration
                            </p>
                            <div class="px-my-20" style="border: 1px solid #58585A; padding: 20px; border-radius: 10px;">
                                <p class="h2" style="color: #58585A;">
                                    Condition of Laptops:
                                </p>
                                <p style="text-justify: justify;">
                                    <ol Type="1" style="margin-left:5px;">
                                        <li style="text-align: left; font-size: 16px;"> The company makes no guarantees regarding the performance or condition of the laptops, and all items are sold "as it is".
                                        </li>
                                    </ol>
                                </p>
                                <p class="h2" style="color: #58585A;">
                                    Warranty and Support:
                                </p>
                                <p style="text-justify: justify;">
                                    <ol Type="1" style="margin-left:5px;">
                                        <li style="text-align: left; font-size: 16px;">Laptops sold through the auction may not come with any warranty or support from the company.
                                        </li>

                                        <li style="text-align: left; font-size: 16px;">Purchaser is responsible for seeking any necessary repairs or technical support independently.
                                        </li>
                                    </ol>
                                </p>
                                <p class="h2" style="color: #58585A;">
                                    Payment:
                                </p>
                                <p style="text-justify: justify;">
                                    <ol Type="1" style="margin-left:5px;">
                                        <li style="text-align: left; font-size: 16px;">Purchaser is responsible for paying the decided amount in full within the specified timeframe.
                                        </li>

                                        <li style="text-align: left; font-size: 16px;">Failure to do so may result in forfeiture of the laptop and potential disciplinary action.
                                        </li>
                                    </ol>
                                </p>

                                <p class="h2" style="color: #58585A;">
                                    No Returns or Refunds:
                                </p>
                                <p style="text-justify: justify;">
                                    <ol Type="1" style="margin-left:5px;">
                                        <li style="text-align: left; font-size: 16px;">All sales are final.
                                        </li>

                                        <li style="text-align: left; font-size: 16px;">There will be no returns or refunds accepted once the auction has concluded and payment has been made.
                                        </li>
                                    </ol>
                                </p>
                                <p class="h2" style="color: #58585A;">
                                    Ownership and Usage:
                                </p>
                                <p style="text-justify: justify;">
                                    <ol Type="1" style="margin-left:5px;">
                                        <li style="text-align: left; font-size: 16px;">Upon successful payment, a money receipt and Bonafide letter will be provided to the purchaser.
                                        </li>

                                        <li style="text-align: left; font-size: 16px;">CSM Technologies is not liable for any issues arising from the use or maintenance of the laptop post-auction.
                                        </li>
                                    </ol>
                                </p>
                                <p class="h2" style="color: #58585A;">
                                    Non-transferability:
                                </p>
                                <p style="text-justify: justify;">
                                    <ol Type="1" style="margin-left:5px;">
                                        <li style="text-align: left; font-size: 16px;"> The purchaser may not revive the laptop to another individual, whether within or outside the company, without prior written consent from CSM Technologies.
                                        </li>
                                    </ol>
                                </p>
                            </div>
                            <p style="margin-top: 20px;">
                                <field name="check_declaration"/>
                                <label for="check_declaration" style="font-size: 15px; color: #58585A; font-weight:bold" string="I hereby declare that all the information provided above is true and accurate to the best of my knowledge and belief."/>
                            </p>
                        </div>
                    </div>
                    <footer>
                        <center>
                            <button string="Submit" name="proceed_bid_with_declaration" type="object" class="btn btn-lg" style="background-color: gray; color: wheat; font-weight: bold;"/>
                        </center>
                    </footer>
                </div>
            </form>
        </field>
        </record>

    </data>
</odoo>
