        <record id='auction_request_mail' model='mail.template'>
            <field name="name">Mail for auction request</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name='subject'>Request For Auction Open.</field>
            <field name='email_to'>${ctx['email_to']}</field>
            <field name='email_cc'>${ctx['email_cc']}</field>
            <field name='model_id' ref='kw_auction.model_kw_auction'/>
            <field name='auto_delete' eval='False'/>
            <field name='body_html'>
                <![CDATA[
                <html>
                <head>
                    <style>
                        th, td {
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                        }
                    </style>
                </head>
                <body>
                    <p>Dear Sir/Mam,</p>
                    <p>Request for open the auction for this item.</p>
                    
                    <table style="border-collapse: collapse; width: 100%; border: 1px solid #dddddd;">
                        <tr>
                            <th style="border: 1px solid #dddddd; text-align: center;">Reference ID</th>
                            <th style="border: 1px solid #dddddd; text-align: center;">Item Name</th>
                            <th style="border: 1px solid #dddddd; text-align: center;">Item Model</th>
                            <th style="border: 1px solid #dddddd; text-align: center;">Item Configuration</th>
                            <th style="border: 1px solid #dddddd; text-align: center;">FA Code</th>
                            <th style="border: 1px solid #dddddd; text-align: center;">Serial No</th>
                            <th style="border: 1px solid #dddddd; text-align: center;">Price</th>
                        </tr>
                        <tr>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.auction_ref_id}</td>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.item_name}</td>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.item_model}</td>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.item_configuration}</td>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.fa_code}</td>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.serial_no}</td>
                            <td style="border: 1px solid #dddddd; text-align: center;">${object.reserve_price}</td>
                        </tr>
                    </table>
                    <br>
                    <br>
                </body>
                </html>
                ]]>
            </field>
        </record>


