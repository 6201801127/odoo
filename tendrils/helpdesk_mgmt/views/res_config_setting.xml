<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_setting_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.helpdesk.mgmt</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="HelpDesk" string="HelpDesk" data-key="helpdesk_mgmt">
                    <h2>IT HelpDesk</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Helpdesk Mail cc</span>
                                <div class="text-muted content-group mt16">
                                    <field name="mail_to_user" class="text-center oe_inline" 
                                    widget="many2many_tags"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>