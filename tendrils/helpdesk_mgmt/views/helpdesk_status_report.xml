<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_helpdesk_status_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_status_report.tree</field>
        <field name="model">helpdesk_status_report</field>
        <field name="arch" type="xml">
            <tree create='0' edit='0' delete='0' import='0'>
                <field name="id" string="SL No"/>
                <field name="number"/>
                <field name="create_date"/>
                <field name="users_id"/>
                <field name="issue_name"/>
                <field name="category_id"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="remarks_for_done"/>
                <field name="closed_date"/>
                <button name="helpdesk_status_report_action_view" type="object" string="View Details" class="oe_highlight"/>
					
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_status_tree_search" model="ir.ui.view">
        <field name="name">view_helpdesk_status_report_search</field>
        <field name="model">helpdesk_status_report</field>
        <field name="arch" type="xml">
            <search string="professional_tax_report_search">
                <field name="number"/>
                <field name="closed_date"/>
                <field name="create_date"/>
                <field name="users_id"/>
                <field name="issue_name"/>
                <field name="category_id"/> 
                <field name="stage_id"/>
                <field name="remarks_for_done"/>
                <field name="user_id"/>
                <filter string="Today" name="todays_data" domain="[('create_date', '&lt;=',context_today().strftime('%Y-%m-%d')),('create_date', '&gt;=',context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" domain="[('create_date', 'like',context_today().strftime('%Y-%m'))]" name="this_month_salary"/>
                <separator/>
                <filter string="Last Month" domain="[('create_date','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('create_date','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_salary"/>
                <separator/>
                
            </search>
        </field>
    </record>
    <record id="helpdesk_status_report_action" model="ir.actions.act_window">
        <field name="name">Status Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk_status_report</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>
    
</odoo>
