<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="action_helpdesk_ticket_kanban_from_dashboard" model="ir.actions.act_window">
      <field name="name">Helpdesk Ticket</field>
      <field name="res_model">helpdesk.ticket</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context">
            {'default_team_id': active_id,}
          </field>
          <field name="domain">[('team_id', '=', active_id)]</field>
  </record>

  <record id="helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field string="Ticket" name="number" filter_domain="['|',('number', 'ilike', self),('name', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="name"/>
                <field name="tag_ids"/>
                <field name="stage_id"/>
                <filter string="InProgress" name="inprogress" domain="[('stage_id','=','In Progress')]"/>
                <filter string="Onhold" name="onhold" domain="[('stage_id','=','Hold')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('stage_id','=','Cancelled')]"/>
                <filter string="Done" name="done" domain="[('stage_id','=','Done')]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('user_id','=',False)]"/>
                <filter string="Assigned" name="assigned" domain="[('user_id','!=',False)]"/>
                <filter string="Open" name="open" domain="[('closed', '=', False )]" />
                <filter string="Unattended" name="unattended" domain="[('unattended', '=', True )]" groups='helpdesk_mgmt.group_helpdesk_user'/>
                <filter string="High Priority" name="high_priority" domain="[('priority','=','3')]"/>
                <separator/>
                <filter string="My Tickets" name="my_tickets" domain="['|',('user_id','=',uid),('users_id','=',uid)]"/>
                <!-- <filter string="My message" name="message_ids" domain="[('')]"/> -->
                <filter string="My Followed Tickets" name="my_followed_tickets" domain="[('message_is_follower', '=', True)]" />
                <separator/>
                <filter name="last_week" string="Last Week" domain="[('create_date','&gt;', (context_today() - datetime.timedelta(weeks=1)).strftime('%%Y-%%m-%%d') )]"/>
                <separator/>
                <!-- <filter string="My Activities" name="activities_my"
                  domain="[('activity_ids.user_id', '=', uid)]" groups='helpdesk_mgmt.group_helpdesk_user'/>
                <filter string="Late Activities" name="activities_overdue"
                  domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                  help="Show all records which has next action date is before today" groups='helpdesk_mgmt.group_helpdesk_user'/>
                <filter string="Today Activities" name="activities_today"
                  domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]" groups='helpdesk_mgmt.group_helpdesk_user'/>
                <filter string="Future Activities" name="activities_upcoming_all"
                  domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))
                  ]" groups='helpdesk_mgmt.group_helpdesk_user'/> -->
                <group expand="0" string="Group By" >
                  <filter string="Partner" name="group_partner" domain="[]" context="{'group_by':'partner_id'}" groups='helpdesk_mgmt.group_helpdesk_user'/>
                  <filter string="Team" name="group_team" domain="[]" context="{'group_by':'team_id'}" groups='helpdesk_mgmt.group_helpdesk_user'/>
                  <filter string="User" name="group_user" domain="[]" context="{'group_by':'user_id'}" groups='helpdesk_mgmt.group_helpdesk_user'/>
                  <filter string="Stage" name="group_stage" domain="[]" context="{'group_by':'stage_id'}" groups='helpdesk_mgmt.group_helpdesk_user'/>
                </group>
            </search>
        </field>
    </record>
    <record id="ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket">
                <header>
                    <!-- <button string="Assign to me"
                            name="assign_to_me"
                            type="object"
                            attrs="{'invisible' : [('user_id', '!=', False)]}"/> -->
                    <button string="Accept Ticket"
                            name="accept_ticket"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible':['|',('code','!=','N')]}"
                            groups ="helpdesk_mgmt.group_helpdesk_user"
                            />
                    <button name="%(incident_wizard_action)d" 
                            string="Assign Team" 
                            type="action" class="btn-primary" 
                            attrs="{'invisible':[('user_id','!=',False)]}"
                            groups="helpdesk_mgmt.group_helpdesk_manager,helpdesk_mgmt.group_helpdesk_officer"/>
                    <button name='action_re_open'
                            string='Re-Open Ticket'
                            type='object'
                            class='btn-primary'
                            groups='helpdesk_mgmt.group_helpdesk_user_own'
                            attrs="{'invisible':['|', ('ticket_end_date','==',True), ('code','!=','D')]}"/>

                    <button name='%(remarks_wizard_action)d'
                            string='GoTo In Progress Stage'
                            type='action'
                            class='btn-primary'
                            groups='helpdesk_mgmt.group_helpdesk_user'
                            attrs="{'invisible':[('code','!=','H')]}"/>
                    <button name="%(awaiting_remarks_wizard_action)d" 
                            string="Hold" 
                            type="action" class="btn-warning"
                            groups="helpdesk_mgmt.group_helpdesk_user"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <button name="%(done_remarks_wizard_action)d" 
                            string="Done" 
                            type="action" class="btn-success" 
                            groups="helpdesk_mgmt.group_helpdesk_user"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <button name="%(cancelled_remarks_wizard_action)d" 
                            string="Cancel" 
                            type="action" class="btn-danger" 
                            groups="helpdesk_mgmt.group_helpdesk_user"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <button name="%(new_team_assign_wizard_action)d" 
                            string="Forward" 
                            type="action" class="btn-primary" 
                            groups="helpdesk_mgmt.group_helpdesk_user"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <field name="stage_id" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="1">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="number"/>
                        </h1>
                        <!-- <h2 class="o_row">
                            <field name="name"/>
                        </h2> -->

                    </div>
                    <group name="main">
                        <group>
                            <field name="name" attrs="{'readonly':[('code','!=','N')]}"/>
                            <field name="request" widget="radio" attrs="{'readonly':[('code','!=','N')]}" />
                            <field name="request_bool" invisible="1"/>
                            <field name="priority" widget="priority" groups="helpdesk_mgmt.group_helpdesk_manager" />
                            <field name="call_type_id" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}" attrs="{'readonly':[('code','!=','N')]}"/>
                            <field name="team_id" string='Category Name' options='{"always_reload": True,"no_create":True,"no_update":True,"no_delete":True,"no_open":True}' readonly="1" groups="helpdesk_mgmt.group_helpdesk_user" attrs="{'invisible':[('team_id','=',False)]}"/>
                            <field name="user_ids" invisible="1" readonly="1" />
                            <field name="user_id" options='{"always_reload": True,"no_create":True,"no_update":True,"no_delete":True,"no_open":True}' readonly="1" groups="helpdesk_mgmt.group_helpdesk_user" attrs="{'invisible':[('user_id','=',False)]}" />
                            <field name="code" invisible="1"/>
                            <field name="company_id" options="{'no_create': True,'no_open': True}" groups="base.group_multi_company" invisible="1"/>
                            <field name="create_date" readonly="1" attrs="{'invisible': [('create_date','=',False)]}"/>
                            <field name="channel_id" invisible="1"/>
                            <field name="duration" id="real_duration" widget="countdown" style="color: red;" />
                            <field name="ticket_duration" widget="newcountdown" style="color: red;" />
                            <field name="hold_ticket_duration" widget="holdcountdown" style="color: red;" />
                            <field name="last_stage_update" readonly="1" attrs="{'invisible':[('last_stage_update','=',False)]}" invisible="1"/>
                            <field name="assigned_date" readonly="1" attrs="{'invisible':[('assigned_date','=',False)]}"/>
                            <field name="closed_date" readonly="1" attrs="{'invisible':[('closed_date','=',False)]}"/>
                            <field name="is_assign_ticket" invisible="1"/>
                            
                        </group>
                        <group>
                            <!-- <field name="partner_id" /> -->
                            <field name="users_id" 
                                options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}" 
                                force_save="1" 
                                attrs="{'invisible':[('request_bool','=',False)], 'readonly': ['|',('request','=','self'),'|',('code','=','D'),('code','=','C')]}"/>
                            <field name="users_email"
                                    force_save="1"
                                    attrs="{'invisible':[('request_bool','=',False)],'readonly': ['|',('request','=','self'),'|',('code','=','D'),('code','=','C')]}" 
                                    />
                            <!-- <field name="partner_name"/> -->
                            <!-- <field name="partner_email" /> -->
                            <field name="category_id" 
                                    options="{'no_open': True,'no_create':True,'no_edit':True}" 
                                    attrs="{'readonly':[('code','!=','N')]}"/>
                            <field name="sub_category"
                                    options="{'no_open': True,'no_create':True,'no_edit':True}"
                                    attrs="{'readonly':[('code','!=','N')]}"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" invisible="1"/>
                            <!-- <field name="sequence" groups="base.group_no_one"/> -->
                            <field name="attachment" attrs="{'readonly':[('code','!=','N')]}"/>
                            <field name="remarks_for_inprogress" groups="helpdesk_mgmt.group_helpdesk_user" readonly="1" attrs="{'invisible': [('remarks_for_inprogress','=',False)]}"/>
                            <field name="remarks_for_done" groups="helpdesk_mgmt.group_helpdesk_user" readonly="1" attrs="{'invisible': [('remarks_for_done','=',False)]}"/>
                            <field name="remarks_for_awaiting" groups="helpdesk_mgmt.group_helpdesk_user" readonly="1" attrs="{'invisible': [('remarks_for_awaiting','=',False)]}"/>
                            <field name="remarks_for_cancelled" groups="helpdesk_mgmt.group_helpdesk_user" readonly="1" attrs="{'invisible': [('remarks_for_cancelled','=',False)]}"/>
                            <field name="forward_reason" groups="helpdesk_mgmt.group_helpdesk_user" invisible="1" attrs="{'invisible': [('forward_reason','=',False)]}"/>
                            <field name="approver_user_ids" invisible="1"/>
                            <field name = "ticket_end_date" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" widget="html" attrs="{'readonly':[('code','!=','N')]}"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <group name="aaa" groups="helpdesk_mgmt.group_helpdesk_user">
                    <div class="oe_chatter" >
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </group>
            </form>
        </field>
    </record>
    <record id="ticket_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree delete='0' import='0'>
                <field name="number" />
                <field name="name"/>
                <field name="request"/>
                <field name="call_type_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="priority" widget="priority" groups="helpdesk_mgmt.group_helpdesk_manager"/>
                <field name="create_date" readonly="1"/>
                <field name="last_stage_update"/>
                <field name="attachment"/>
                <field name="is_assign_ticket" invisible="1"/>
                <field name="ticket_end_date" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
      <field name="name">helpdesk.ticket.kanban</field>
      <field name="model">helpdesk.ticket</field>
      <field name="priority" eval="100"/>
      <field name="arch" type="xml">
          <kanban class="o_kanban_mobile" archivable="false"  default_group_by="stage_id" disable_sort_column='true' disable_sort_record='true' disable_drag_drop_record='true'>
              <field name="number"/>
              <field name="name"/>
              <field name="team_id"/>
              <field name="user_id"/>
              <!-- <field name="sequence"/> -->
              <field name="color"/>
              <field name="stage_id"/>
              <field name="priority" widget="priority"/>
              <field name="assigned_date"/>
              <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
              <templates>
                  <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_content oe_kanban_global_click">
                        <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                            <a class="dropdown-toggle btn" role="button" data-toggle="dropdown" href="#">
                                <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <li t-if="widget.editable"><a type="edit">Edit</a></li>
                                <li t-if="widget.deletable"><a type="delete">Delete</a></li>
                                <li class="divider"/>
                                <li>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </li>
                            </ul>
                        </div>
                          <div class="o_kanban_record_top">
                            <div class="o_kanban_record_headings">
                              <strong class="o_kanban_record_title" style="font-weight: bold"><field name="number"/> -<field name="name"/></strong><!--- -->
                              <small class="o_kanban_record_subtitle text-muted">
                                <field name="partner_id"/>
                              </small>
                            </div>
                          </div>
                          <div class="o_kanban_record_body">
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                          </div>
                          <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left"/>
                            <div class="oe_kanban_bottom_right">
                              <field name="activity_ids" widget="kanban_activity" related="activity_state"/>
                              <field name="kanban_state" widget="state_selection"/>
                              <field name="activity_state" invisible="1"/>
                              <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar" alt="Assigned user image"/>
                            </div>
                          </div>
                      </div>
                  </t>
              </templates>
          </kanban>
      </field>
  </record>
    <record id="helpdesk_ticket_views_pivot" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Analysis" disable_linking="True">
                <field name="team_id" type="row"/>
                <field name="assigned_date" type="col"/>
            </pivot>
        </field>
    </record>
</odoo>
