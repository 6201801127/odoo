<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="new_team_assign_wizard_form_view" model="ir.ui.view">
        <field name="name">awaiting.remarks.wizard.form.view</field>
        <field name="model">new.team.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Remarks">

                <sheet>
                    <group>
                        <field name="team_id" options='{"no_create":True,"no_update":True,"no_delete":True,"no_open":True}'/>
                        <field name="second_level_id"
                               options='{"no_create":True,"no_update":True,"no_delete":True,"no_open":True}'/>
                        <field name="comment"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Forward" name="action_new_teamassign_wiz"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="new_team_assign_wizard_action" model="ir.actions.act_window">
        <field name="name">Forward</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">new.team.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!--Add Text Here -->
            </p>
        </field>
    </record>

</odoo>
