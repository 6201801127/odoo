<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="remarks_wizard_form_view" model="ir.ui.view">
        <field name="name">remarks.wizard.form.view</field>
        <field name="model">remarks.wizard</field>
        <field name="arch" type="xml">
            <form string="Remarks">

                <sheet>
                    <group>
                        <field name="remarks_for_inprogress"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Submit Remarks" name="action_remarks"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="remarks_wizard_action" model="ir.actions.act_window">
        <field name="name">Remarks For Inprogres</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">remarks.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!--Add Text Here -->
            </p>
        </field>
    </record>
