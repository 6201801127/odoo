<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_timer" model="ir.cron">
            <field name="name">Update The Timer</field>
            <field name="model_id" ref="model_helpdesk_ticket" />
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.update_timer_from_cron()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>
        <record id="ir_cron_archive_tickets" model="ir.cron">
            <field name="name">Archive Tickets</field>
            <field name="model_id" ref="model_helpdesk_ticket" />
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.archive_ticket_from_cron()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">3</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>
        
        <record id="reopen_button_invisible_cron" model="ir.cron">
            <field name="name">reopen_button_invisible_cron</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="state">code</field>
            <field name="code">model.invisible_re_open_ticket()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>