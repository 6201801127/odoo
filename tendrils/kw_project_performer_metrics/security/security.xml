<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_kw_project_performer_metrics">
            <field name="name">Project Performer Metrics</field>
            <field name="description">User access level for Project Performer Metrics</field>
        </record>
        <record id="group_quality_engineer" model="res.groups">
            <field name="name">Quality Resource</field>
            <field name="category_id" ref="module_kw_project_performer_metrics"/>
        </record>
        <record id="group_quality_head" model="res.groups">
            <field name="name">Quality Head</field>
            <field name="category_id" ref="module_kw_project_performer_metrics"/>
        </record>
        <record id="group_quality_engineer_rule_id" model="ir.rule">
            <field name="name">Quality Engineer Access</field>
            <field name="model_id" ref="model_kw_project_performer_metrics" />
            <field name="domain_force">['|',('create_uid','=', user.id),('state','=','publish')]</field>
            <field name="groups" eval="[(4,ref('kw_project_performer_metrics.group_quality_engineer'))]" />
        </record>
        <record id="group_quality_head_rule_id" model="ir.rule">
            <field name="name">Quality Head Access</field>
            <field name="model_id" ref="model_kw_project_performer_metrics" />
            <field name="domain_force">['|',('create_uid','=', user.id),('state','in',['apply','publish','reject'])]</field>
            <field name="groups" eval="[(4,ref('kw_project_performer_metrics.group_quality_head'))]" />
        </record>
    </data>
</odoo>