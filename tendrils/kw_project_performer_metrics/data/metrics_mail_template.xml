<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">


        <record id="kw_project_performer_metrics_email_template" model="mail.template">
            <field name="name">Take Action Email</field>
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="subject">PPM | ${ctx['state']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="model_kw_project_performer_metrics" />
            <field name="auto_delete" eval="False" />
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear ${ctx['name']} ,</span>
                                    </h5>
                                    % if ctx['state'] == 'Applied':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                     ${object.employee_id.name} has been nominated for the Project Performer of the month ${ctx['month']}-${object.year}. 
                                    </p>
                                    % elif ctx['state'] == 'Published':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Your Project Performance of the month ${ctx['month']}-${object.year} has been Approved by ${object.env.user.employee_ids.name}.  
                                    </p>
                                    % elif ctx['state'] == 'Rejected':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Your Project Performance of the month ${ctx['month']}-${object.year} has been Rejected by ${object.env.user.employee_ids.name}.  
                                    </p>
                                    %endif
                                </div>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        % if ctx['state'] == 'Applied':
                                        Kindly login to the system to take action.                                  
                                        %endif
                                        <br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>