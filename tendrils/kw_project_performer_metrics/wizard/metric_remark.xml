<odoo>
    <data>
        <record model="ir.ui.view" id="metric_remark_view">
            <field name="name">Payroll Data</field>
            <field name="model">metric_remark</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="reject_btn" type="object" string="Reject" class="btn-danger btn-lg"/>
                                <button string="Cancel" class="btn-default btn-lg" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>