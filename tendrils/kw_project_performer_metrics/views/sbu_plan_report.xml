<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="project_sbu_wizard_form" model="ir.ui.view">
            <field name="name">kw_sbu_plan_filter.form</field>
            <field name="model">kw_sbu_plan_filter</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="year" required="1"/>
                                <field name="month" required="1"/>
                                <!-- <field name="sbu_id" required="1"/> -->
                            </group>
                        </group>
                    </sheet>
                    <footer>
                    <center>
                        <button name="filter_sbu_report" string="View" type="object" class="btn btn-success btn-lg" invisible="context.get('sbu', False)"/>
                        <button name="filter_bench_report" type="object" class="btn btn-success btn-lg" string="View" invisible="not context.get('sbu', False)"/>
                        <button string="Cancel" class="btn btn-danger btn-lg" special="cancel" style="margin-left: 10px;"/>
                    </center>
                    </footer>
                </form>
            </field>
        </record>

    


        <record id="project_sbu_plan_filter_action" model="ir.actions.act_window">
            <field name="name">SBU Plan Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_sbu_plan_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>



        <record model="ir.ui.view" id="view_kw_sbu_plan_report_tree">
            <field name="name">kw_sbu_plan_report_tree</field>
            <field name="model">kw_sbu_plan_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="year"/>
                    <field name="month_name"/>
                    <field name="sbu_master_id"/>
                    <field name="developer_count"/>
                    <field name="tl_count"/>
                    <field name="ctc"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_kw_bench_plan_report_tree">
            <field name="name">kw_bench_plan_report</field>
            <field name="model">kw_bench_plan_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="year"/>
                    <field name="month_name"/>
                    <field name="developer_count"/>
                    <field name="tl_count"/>
                    <field name="ctc"/>
                </tree>
            </field>
        </record>

    <!-- kw_bench_plan_report search view -->
    <record id="kw_sbu_plan_report_search" model="ir.ui.view">
        <field name="name">kw_sbu_plan_report.view.search</field>
        <field name="model">kw_sbu_plan_report</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                 <field name="year"/>
                    <field name="month_name"/>
                    <field name="sbu_master_id"/>
                    <field name="developer_count"/>
                    <field name="tl_count"/>
                    <field name="ctc"/>
                     <group expand="0" string="Group By">
                        <filter name="sbu_group_by" string="SBU" domain="" context="{'group_by':'sbu_master_id'}"/>
                    </group>
            </search>
        </field>
    </record>
    
    
        <record id="project_bench_plan_filter_action" model="ir.actions.act_window">
            <field name="name">Bench Plan Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_sbu_plan_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'sbu':1}</field>
        </record>
    </data>
</odoo>