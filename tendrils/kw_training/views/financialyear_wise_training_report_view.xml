<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >
        <record id="kw_financial_year_wise_training_report_view_tree" model="ir.ui.view">
            <field name="name">Financial Year Wise Report</field>
            <field name="model">financial_year_wise_training_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="fiscal_year"/>
                    <field name="training_id"/>
                    <field name="course_id"/>
                    <field name="participant_id"/>
                    <field name="desgignation"/>
                </tree>
            </field>
        </record>
        <record id="yearly_training_wise_report_search" model="ir.ui.view">
        <field name="name">Year wise Training Report</field>
        <field name="model">financial_year_wise_training_report</field>
        <field name="arch" type="xml">
            <search>
                <field name="fiscal_year"/>
                <field name="training_id"/>
                <field name="course_id"/>
                <field name="participant_id"/>
                <field name="desgignation"/>
                <group expand="0" string="Group By">
                        <filter name="year_wise_report" string="Financial Year" domain="[]" context="{'group_by':'fiscal_year'}"/>
                        <filter name="training_wise_report" string="Training" domain="[]" context="{'group_by':'training_id'}"/>
                        <filter name="participant_wise_report" string="Participants" domain="[]" context="{'group_by':'participant_id'}"/>
                </group>
            </search>
        </field>
        </record>
    
        <record id="kw_financial_year_wise_training_report_view_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Financial Year Wise Report</field>
            <field name="res_model">financial_year_wise_training_report</field>
            <field name="context">{'search_default_year_wise_report':1 }</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Financial Year wise Training Report" id="financial_year_wise_training_report_menu_item" 
                parent='menu_kw_training_report' action="kw_financial_year_wise_training_report_view_act_window" sequence='100'/>

    </data>
</odoo>
