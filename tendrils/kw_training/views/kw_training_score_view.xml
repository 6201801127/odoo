<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_training_score_form" model="ir.ui.view">
            <field name="name">view.kw_training_score.form</field>
            <field name="model">kw_training_score</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <group>
                            <field name="training_id" readonly="1" options="{'no_edit': True,'no_create':True,'no_open':True}"/>
                            <field name="assessment_id" readonly="1" options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                            <field name='full_marks' />
                        </group>
                        <group>
                            <field name="score_detail_ids">
                                <tree editable="bottom" create="false" delete="false" >
                                    <field name="participant_id" style="pointer-events:none;" options="{'no_edit': True,'no_create':True,'no_open':True}"/>
                                    <field name="attendance" placeholder='Exam Appearing Status'/>
                                    <field name="score"/>
                                    <field name="percentage"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_kw_training_score_readonly_form" model="ir.ui.view">
            <field name="name">view.kw_training_score.form</field>
            <field name="model">kw_training_score</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <field name="training_id" readonly="1" options="{'no_edit': True,'no_open':True,'no_create':True,}"/>
                            <field name="assessment_id" readonly="1" options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="score_detail_ids">
                                <tree editable="bottom">
                                    <field name="participant_id" options="{'no_edit': True,'no_open':True,'no_create':True,}"/>
                                    <field name="attendance" placeholder='Exam Appearing Status'/>
                                    <field name="score"/>
                                    <field name="percentage"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>