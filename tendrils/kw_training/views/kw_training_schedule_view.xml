									<div class="o_kanban_record_headings">
										<div class="text-left">
											<h3 class='text-uppercase'>
												<field name="subject"/>
											</h3>
											<h3 class='text-uppercase badge badge-warning text-wrap font-weight-bold' style="font-size: 1rem;">
												<field name="session_type"/>
											</h3>
											<div class="clearfix"/>
											<div class="row">
												<div class="col-sm-12">
													<span class="font-weight-bold fa fa-user mb-2"/>
                                                        &amp;nbsp; <b> Instructor: </b>
													<field name="instructor_name"/>
													<br />
													<span class="font-weight-bold fa fa-calendar-o mb-2"/>
                                                        &amp;nbsp; <b> Date: </b>
													<field name="date" widget="date"/>
													<br/>
													
													<span class="font-weight-bold fa fa-clock-o mb-2"/>
                                                        &amp;nbsp; <b> Start Time: </b>
													<field name="from_time" />
													<br/>
													<span class="font-weight-bold fa fa-clock-o mb-2"/>
                                                        &amp;nbsp; <b> End Time: </b>
													<field name="to_time"/>
													
												</div>
											</div>
										</div>
										<div class="training_button_section"/>
									</div>
								</div>
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>

		<record id="kw_training_schedule_view_only_form" model="ir.ui.view">
			<field name="name">kw_training_schedule.form</field>
			<field name="model">kw_training_schedule</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form create="false" edit="false" delete="false" export="false" duplicate="false">
