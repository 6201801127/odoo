			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="view_ids" eval="[(5, 0, 0),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_training.kw_training_schedule_view_only_kanban')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_training.kw_training_schedule_view_only_tree')}),
