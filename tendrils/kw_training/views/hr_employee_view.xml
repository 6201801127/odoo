<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_training_tree" model="ir.ui.view">
            <field name="name">view.hr_employee_training.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="image_small" string="Photo" class="oe_avatar" widget="image" height="25px" width="25px"/>
                    <field name="emp_code"/>
                    <field name="name"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
                    <field name="work_location_id" string="Location"/>
                    <field name="parent_id" string="RA name"/>
                    <field name="work_email" string="Email"/>
                    <field name="mobile_phone" string="Mobile Number"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

