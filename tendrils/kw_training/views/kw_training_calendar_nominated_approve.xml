<odoo>
    <data noupdate="0">

        <record id="kw_training_nominate_approve_email_template" model="mail.template">
            <field name="name">Training Request Email</field>
            <field name="subject">${ctx['name']}</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <!-- <field name="email_cc">${ctx['name']}</field> -->
            <field name="model_id" ref="model_kw_training_calendar_report"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <p>
                                        <b>
                                            <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Hi, </span>
                                        </b>
                                    </p>
                                    <p>
                                      <b>${ctx['user_name']}</b> requested for Training Session.
                                    </p>
                                    <br/>
                                    <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                Name:
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                 ${object.name}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                            Start Date :
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${format_tz(object.start_date, tz='UTC', format='%d-%b-%Y')}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                End Date :
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${format_tz(object.end_date, tz='UTC', format='%d-%b-%Y')}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                Course :
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                               ${object.course_id.name}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                Instructor :
                                            </td>
                                            <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                ${object.instructor_type}
                                            </td>
                                        </tr>
                                       
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
                ]]>
            </field>
        </record>

