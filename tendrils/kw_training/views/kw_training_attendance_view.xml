<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_training_attendance_tree" model="ir.ui.view">
            <field name="name">view.kw_training_attendance.tree</field>
            <field name="model">kw_training_attendance</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="training_id"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_training_attendance_form" model="ir.ui.view">
            <field name="name">view.kw_training_attendance.form</field>
            <field name="model">kw_training_attendance</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <group>
                            <field name="training_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="session_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="date" readonly="1"/>
                            <field name="from_time" readonly="1"/>
                            <field name="to_time" readonly="1"/>
                            <field name="attendance_detail_ids">
                                <tree editable="bottom">
                                    <field name="participant_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}" style="pointer-events:none;" force_save='1'/>
                                    <field name="attended"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>