<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_training_plan_approve_remark_form_view" model="ir.ui.view">
            <field name="model">kw_training_plan</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <group>
                                <group>
                                    <field name="ra_access" invisible="1"/>
                                    <field name="remark"/>
                                    <field name="department_ids" options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                                         widget="many2many_tags"/>
                                </group>
                            </group>
                        </p>
                        <button type="object" name="approve_remark" class="text-center btn btn-primary">Submit</button>
                    </div>
                </div>
                </form>
            </field>
        </record>
        
        <!-- Reject Remarks -->
        <record id="kw_training_plan_reject_remark_form_view" model="ir.ui.view">
            <field name="model">kw_training_plan</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="ra_access" invisible="1"/>
                            <field name="remark"/>
                        </p>
                        <button type="object" name="reject_remark" class="text-center btn btn-primary">Submit</button>
                    </div>
                </div>
                </form>
            </field>
        </record>
    </data>
</odoo>