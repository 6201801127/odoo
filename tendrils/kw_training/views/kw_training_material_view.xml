<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_training_material_tree" model="ir.ui.view">
            <field name="name">view.kw_training_material.tree</field>
            <field name="model">kw_training_material</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="description"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="material" string='Download' widget="download_link" filename="training_material"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_training_material_form" model="ir.ui.view">
            <field name="name">view.kw_training_material.form</field>
            <field name="model">kw_training_material</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="description" autocomplete="off"/>
                                <field name="material" widget="pdf_viewer"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_kw_training_material_kanban" model="ir.ui.view">
            <field name="name">view.kw_training_material.kanban</field>
            <field name="model">kw_training_material</field>
            <field name="type">kanban</field>
            <field name="mode">primary</field>
            <field name="sequence" eval="1"/>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <kanban import="false">
                    <field name="description"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="material"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top container p-2 m-0">
                                    <div class="o_kanban_record_headings">
                                        <div class="text-left">
                                            <h3 class='text-uppercase'>
                                                <field name="description"/>
                                            </h3>
                                            <div class="clearfix"/>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <span class="font-weight-bold fa fa-calendar-o mb-2"/>
                                                        &amp;nbsp; <b> Created On: </b>
                                                    <field name="create_date"/>
                                                    <br/>
                                                    <span class="font-weight-bold fa fa-calendar-o mb-2"/>
                                                        &amp;nbsp; <b> Updated On: </b>
                                                    <field name="write_date"/>
                                                    <br/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_kw_training_material_search" model="ir.ui.view">
            <field name="name">view.kw_training_material.search</field>
            <field name="model">kw_training_material</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="training_id"/>
                </search>
            </field>
        </record>

        <record id="action_kw_training_material_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Training Contents</field>
            <field name="res_model">kw_training_material</field>
            <field name="view_mode">tree,kanban</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_kw_training_material_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_training.view_kw_training_material_kanban')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_training.view_kw_training_material_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_training.view_kw_training_material_form')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
               No training material found...
                </p>
            </field>
        </record>

        <record id="view_kw_training_material_view_only_tree" model="ir.ui.view">
            <field name="name">view.kw_training_material.tree</field>
            <field name="model">kw_training_material</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false" import="false">
                    <field name="description"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="material" string='Download' widget="download_link" filename="training_material"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_training_material_view_only_form" model="ir.ui.view">
            <field name="name">view.kw_training_material.form</field>
            <field name="model">kw_training_material</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" export="false" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="material" widget="pdf_viewer"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_only_kw_training_material_kanban" model="ir.ui.view">
            <field name="name">view_only.kw_training_material.kanban</field>
            <field name="model">kw_training_material</field>
            <field name="type">kanban</field>
            <field name="mode">primary</field>
            <field name="sequence" eval="1"/>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <kanban create="false" edit="false" delete="false" import="false">
                    <field name="description"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="material"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top container p-2 m-0">
                                    <div class="o_kanban_record_headings">
                                        <div class="text-left">
                                            <h3 class='text-uppercase'>
                                                <field name="description"/>
                                            </h3>
                                            <div class="clearfix"/>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <span class="font-weight-bold fa fa-calendar-o mb-2"/>
                                                        &amp;nbsp; <b> Date: </b>
                                                    <field name="create_date"/>
                                                    <br/>
                                                    <span class="font-weight-bold fa fa-calendar-o mb-2"/>
                                                        &amp;nbsp; <b> Date: </b>
                                                    <field name="write_date"/>
                                                    <br/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_kw_training_material_view_only_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Training Contents</field>
            <field name="res_model">kw_training_material</field>
            <field name="view_mode">tree,kanban</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_kw_training_material_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_training.view_only_kw_training_material_kanban')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_training.view_kw_training_material_view_only_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_training.view_kw_training_material_view_only_form')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
               No training material found...
                </p>
            </field>
        </record>
    </data>
</odoo>
