<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_training_score_details_tree" model="ir.ui.view">
            <field name="name">view.kw_training_score_details.tree</field>
            <field name="model">kw_training_score_details</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="participant_id"/>
                    <field name="attendance" placeholder='Exam Appearing Status'/>
                    <field name="score"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>


        <record id="view_kw_training_assessment_readonly_participant_form" model="ir.ui.view">
            <field name="name">view.kw_training_assessment.form</field>
            <field name="model">kw_training_score_details</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <field name="training_id"/>
                            <field name="participant_id"/>
                            <field name="attendance" placeholder='Exam Appearing Status'/>
                            <field name="score"/>
                            <field name="percentage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>