<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_kw_training_assessment_result_tree" model="ir.ui.view">
            <field name="name">view.kw_training_assessment_result.tree</field>
            <field name="model">kw_training_assessment_result</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree create="false" delete="false" edit="false" import="false" default_order='percentage desc'>
                    <field name="question_set_id" invisible="1"/>
                    <field name="name"/>
                    <field name="designation"/>
                    <field name="status"/>
                    <field name="date"/>
                    <field name="time_taken"/>
                    <field name="score"/>
                    <field name="percentage"/>
                    <button string="Details" type="object" class="btn btn-primary" name="view_participant_result" 
                    attrs="{'invisible': [('status', '=', 'Not Given')]}"/>
                </tree>
            </field>
        </record>

        <record id="action_kw_training_assessment_result_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Test Result</field>
            <field name="res_model">kw_training_assessment_result</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p>
                    No result found...
                </p>
            </field>
        </record>

    </data>
</odoo>