

<odoo>
    <data>
        
        <record id="view_training_generate_certificate_tree" model="ir.ui.view">
            <field name="name">Training certificate tree</field>
            <field name="model">kw_training_certificate_generate</field>
            <field name="arch" type="xml">
                <tree string="Training Certificate Generate" create='false' import='false' delete='false'>
                    <field name="financial_year" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="trainee_id"/>
                    <field name="course_type_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="course_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="training_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="instructor_type" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="start_date" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="end_date" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="skill_answer_id" invisible="1"/>
                    <field name="score_percentage"/>
                    <field name="status"/>
                    
                    <button name="generated_certificate_download" context="{'button':'Download Certificate'}" icon="fa-download" string="Download" type="object" class="btn btn-success"/>

                   
                    <button name="send_certificate_email"  string="Send" type="object" class="btn btn-warning" icon="fa-paper-plane" attrs="{'invisible':[('status','=','1')]}" />
                </tree>
            </field>
        </record>
        
        <record id="action_training_generate_certificate" model="ir.actions.act_window">
            <field name="name">Training Certificate Generate</field>
            <field name="res_model">kw_training_certificate_generate</field>
            <field name="view_mode">tree</field>
        
        </record>
    </data>

</odoo>
