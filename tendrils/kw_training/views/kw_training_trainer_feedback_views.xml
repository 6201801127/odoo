<odoo>
    <data>

        <record id="kw_trainer_feedback_form" model="ir.ui.view">
            <field name="name">kw trainers feedback details</field>
            <field name="model">kw_training_trainer_feedback</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="feedback_submit_btn" type="object" string="Submit" class="btn-success" attrs="{'invisible':[('state','=','submit')]} "/>

                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="financial_year" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                            <field name="course_type_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                            <field name="training_id" readonly="1" force_save="1" invisible='1' />
                            <field name="course_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                            <field name="feedback_detail_ids" attrs="{'readonly':[('state','=','submit')]}" >
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="trainer_feedback_id"  invisible="1"></field>
                                    <field name="participant_id" options="{'no_create': True,'no_open':True,'no_edit':True}" readonly="1" force_save='1' style="pointer-events:none;"/>
                                    <field name="designation" style="pointer-events:none;"/>
                                    <field name="department" style="pointer-events:none;"/>
                                    <field name="training_id" invisible='1' style="pointer-events:none;"/>
                                    <field name="proficiency" />
                                    <field name="remark" />
                                    <field name="financial_year" invisible='1' style="pointer-events:none;"/>
                                    <field name="course_type_id" invisible='1' style="pointer-events:none;"/>
                                    <field name="course_id" invisible='1' style="pointer-events:none;"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="kw_training_trainer_feedback_tree" model="ir.ui.view">
			<field name="name">kw_training_feedback.tree</field>
			<field name="model">kw_training_trainer_feedback_details</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree  string="kw_training_trainer_feedback_report_tree" create='0' edit='0' delete='0' import='0' >
                    <field name="financial_year"  />
                    <field name="course_type_id"  />
                    <field name="course_id"  />
                    <field name="training_id" />
                    <field name="participant_id" readonly="1" force_save='1' />
                    <field name="designation" />
                    <field name="department" />
                    <field name="proficiency" />
                    <field name="remark" />
				</tree>
			</field>
		</record>

        <record id="kw_training_trainer_feedback_search" model="ir.ui.view">
			<field name="name">kw_training_feedback.search</field>
			<field name="model">kw_training_trainer_feedback_details</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search  string="kw_training_trainer_feedback_report_search" >
                    <field name="financial_year"  />
                    <field name="course_type_id"  />
                    <field name="course_id"  />
                    <field name="training_id" />
                    <field name="participant_id" readonly="1" force_save='1' />
                    <field name="designation" />
                    <field name="department" />
                    <field name="proficiency" />
                    <field name="remark" />
                </search>
			</field>
		</record>

        <record id="kw_training_trainer_feedback_action" model="ir.actions.act_window">
            <field name="name">Trainer Feedback Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_training_trainer_feedback_details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('trainer_feedback_id.state','!=','draft')]</field>
            <field name="search_view_id" ref="kw_training_trainer_feedback_tree"/>
        </record>


        <menuitem name="Trainer Feedback Report" parent="kw_training.menu_kw_training_report" id="menu_kw_trainer_feedback_report" action="kw_training_trainer_feedback_action" sequence="121" groups="group_kw_training_manager"/>


    </data>
</odoo>