<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_training_calendar_client" model="ir.actions.client">
            <field name="name">Training Calendar</field>
            <field name="tag">kw_training.training_calendar</field>
        </record>
        
        <menuitem name="Calendar" id="calendar_view_menu" action="kw_training_calendar_client" parent="menu_kw_training_report" sequence="1"/>
        
        <template id="calendar_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/kw_training/static/src/css/calendar.css"/>
                <script src="/kw_training/static/src/js/calendar.js"></script>
            </xpath>
        </template>
    </data>
</odoo>
