                                    <field name="emp_code" style="pointer-events:none;"/>
                                    <field name="name" style="pointer-events:none;"/>
                                    <field name="job_id" string="Designation" style="pointer-events:none;"/>
                                    <field name="department_id" style="pointer-events:none;"/>
                                    <field name="work_email" string="Email" style="pointer-events:none;"/>
                                    <field name="mobile_phone" string="Mobile Number" style="pointer-events:none;"/>
