        <record id="kw_training_plan_tree" model="ir.ui.view">
            <field name="name">kw_training_plan.tree</field>
            <field name="model">kw_training_plan</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" duplicate="false">
                    <field name="ra_access" invisible="1"/>
                    <field name="financial_year"/>
                    <field name="training_id" string="Course"/>
                    <field name="period_from"/>
                    <field name="period_to"/>
                    <field name="employee_id" string="Added By"/>
                    <field name="create_date" string="Added On"/>
                    <field name="state" string="Status"/>
                    <field name="parent_id"/>
                    <field name="action_taken_on" string="Action Taken On"/>
                </tree>
            </field>
        </record>
