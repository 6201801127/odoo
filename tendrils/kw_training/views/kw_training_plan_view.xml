        <record id="view_kw_training_plan_search" model="ir.ui.view">
            <field name="name">view.kw_training_my_training.search</field>
            <field name="model">kw_training_plan</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="training_id"/>
                    <filter string="Current Financial Year" name="current_financial_year"  domain="[('current_financial_year','=',True)]"/>
                    <separator/>
                    <filter string="Instructor (Internal)" name="internal_instructor" icon="terp-personal" domain="[('instructor_type','=','internal')]"/>
                    <filter string="Instructor (External)" name="external_instructor" icon="terp-personal" domain="[('instructor_type','=','external')]"/>
                    <separator/>
                    <filter string="Applied" name="plan_applied" icon="terp-personal" domain="[('state','=','apply')]"/>
                    <filter string="Approved" name="plan_approved" icon="terp-personal" domain="[('state','=','approved')]"/>
                    <filter string="Rejected" name="plan_rejected" icon="terp-personal" domain="[('state','=','rejected')]"/>
                </search>
            </field>
        </record>

