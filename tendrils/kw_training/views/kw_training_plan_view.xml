            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false">
                    <header>
                            <field name="state"/>
                    </header>
                    <sheet>
                        <group string="Course Details">
                            <group>
                                <field name="hide_training" invisible="1"/>
                                <field name="ra_access" invisible="1"/>
                                <field name="training_req_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                                            attrs="{'readonly':[('hide_training','=',True)]}"/>
                                <field name="financial_year" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                                            attrs="{'readonly':[('hide_training','=',True)]}"/>
                                <field name="training_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                                        attrs="{'readonly':[('hide_training','=',True)]}"/>
                                <field name="period_from"/>
                                <field name="period_to"/>
                            </group>
                            <group>
                                <field name="cost"/>
                                <field name="details"/>
                            </group>
                        </group>
                        <group string="Instructor Details">
                            <group>
                                <field name="instructor_type"/>
                                <field name="instructor_partner" 
                                context="{'disable_cdefault':True,'tree_view_ref' : 'kw_training.view_res_partner_kw_training_tree','form_view_ref':'kw_training.view_res_partner_kw_training_form'}"
                                options="{'no_open': True,'no_create':True,'no_edit':True}"
                                attrs="{'invisible': ['|',('instructor_type', '=','internal'),
                                                    ('instructor_type', '=',False)],'readonly':[('state','in',['approved','rejected'])]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <field name="internal_user_ids" options="{'no_edit': True,'no_open':True,'no_create':True}"
                            context="{'search_view_ref':'kw_training.view_hr_employee_training_search','tree_view_ref':'kw_training.view_hr_employee_training_tree'}" attrs="{'invisible': ['|',
                            ('instructor_type', '=','external'),('instructor_type', '=',False)],'readonly':[('state','in',['approved','rejected'])]}">
