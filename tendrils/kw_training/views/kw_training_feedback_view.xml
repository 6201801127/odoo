<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_training_feedback_tree" model="ir.ui.view">
            <field name="name">view.kw_training_feedback.tree</field>
            <field name="model">kw_training_feedback</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" duplicate="false" import="false">
                    <field name="financial_year" invisible='1'/>
                    <field name="training_id" invisible='1'/>
                    <field name="instructor_name"/>
                    <field name="emp_id" string="Employee"/>
                    <button name="view_emp_feedback" string="View Feedback" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_training_feedback_form" model="ir.ui.view">
            <field name="name">view.kw_training_feedback.form</field>
            <field name="model">kw_training_feedback</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <field  name="financial_year" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field  name="emp_id" string="Employee" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field  name="training_id" 
                                    domain="[('financial_year', '=', financial_year),['schedule_ids', '!=', False]]"
                                    options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field  name="instructor_id" 
                                    options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field  name="ext_instructor" 
                                    attrs="{'invisible': ['|',('ext_instructor', '=', False),('training_id', '=', False)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_kw_training_feedback_search" model="ir.ui.view">
            <field name="name">view.kw_training_feedback.search</field>
            <field name="model">kw_training_feedback</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="training_id"/>
                    <field name="emp_id"/>
                </search>
            </field>
        </record>

        <record id="action_kw_training_feedback_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Feedback</field>
            <field name="res_model">kw_training_feedback</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_kw_training_feedback_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_training.view_kw_training_feedback_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_training.view_kw_training_feedback_form')})]"/>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No record(s) found..
                </p>
            </field>
        </record>

        <record id="view_kw_training_feedback_tree_participant" model="ir.ui.view">
            <field name="name">view.kw_training_feedback.tree</field>
            <field name="model">kw_training_feedback</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" duplicate="false" import="false">
                    <field name="financial_year" invisible='1'/>
                    <field name="training_id" invisible='1'/>
                    <field name="instructor_name"/>
                    <field name="emp_id" string="Employee" invisible='1'/>
                    <button name="view_emp_feedback" string="View Feedback" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="action_kw_training_feedback_act_window_participant" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Feedback</field>
            <field name="res_model">kw_training_feedback</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_kw_training_feedback_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_training.view_kw_training_feedback_tree_participant')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_training.view_kw_training_feedback_form')})]"/>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No record(s) found..
                </p>
            </field>
        </record>

    </data>
</odoo>
    