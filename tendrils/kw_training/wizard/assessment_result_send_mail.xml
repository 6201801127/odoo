<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <act_window id="kw_training_result_notify_session_act_window" 
        name="Send Result Mail" src_model="kw_training_assessment" 
        res_model="kw_training_result_notify_session" 
        view_mode="form" target="new"
        multi="False"/>

        <record id="kw_training_result_notify_session_view_form" model="ir.ui.view">
            <field name="name">Send Assessment Result Mail</field>
            <field name="model">kw_training_result_notify_session</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="assessment_id"
                        readonly="1" options="{'no_edit': True, 'no_create':True, 'no_open':True}"/>
                         <field name="employee_ids" widget="many2many_tags"
                        options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                    </group>
                    <footer>
                        <button name="send_result_mail" string="Send Result Mail" 
                        type="object" class="oe_highlight" />
                        Or      
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
