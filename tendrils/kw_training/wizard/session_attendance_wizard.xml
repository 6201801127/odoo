<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_session_attendance_wizard_form" model="ir.ui.view">
            <field name="name">session_attendance_wizard_form</field>
            <field name="model">session_attendance_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="financial_year" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="training_id" domain="[('financial_year','=',financial_year)]" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="show_session_attendance_report" type="object" class="oe_highlight" string="Show Report"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_session_attendance_wizard" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Session Attendance</field>
            <field name="res_model">session_attendance_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
