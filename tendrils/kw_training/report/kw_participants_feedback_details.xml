<odoo>
    <template id="participants_feedback_report_template">
        <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <style>
						.main_div{margin-top:0;width:85%;margin-left:90px}
						.second_div{font-size:13.5px}
						.table1{width:100%;}
						.row1{width:100%;}
						.company{background-color: #e6e6e6;border: 1px solid gray;vertical-align:middle;height:50px;padding: 2px 5px 0px 157px;   font-family:Verdana, Geneva, sans-serif;border-bottom:0px none;}
						.table2{width:100%;border: 1px solid gray;border-collapse: collapse;border-top:0px none;margin-top:10px;}
                        .column1{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px;width:19%}
                        .header1{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px;width:19%}
                        .table3{width:100%;}
                        .sl_num{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px;width:5%}
                        .report{ background-color: #e6e6e6;border: 1px solid gray;vertical-align:middle;height:50px;padding: 2px 5px 0px 157px;font-family:Verdana, Geneva, sans-serif;border-top:0px none;}
                    </style>
                    <div class='main_div'>
                        <div class='second_div'>
                            <div class="col-xs-12 mt-0 pt-0">
                                <table class='table1' cellspacing='0' cellpadding='5'>
                                    <tr class='row1'>
                                        <td class='company'>
                                            <h4>
                                                <b>
                                                    <span>CSM Technologies Private Limited</span>
                                                </b>
                                            </h4>
                                        </td>
                                    </tr>
                                    <tr class='report'>
                                        <td>
                                            <h4>
                                                <center>
                                                    <span>Participants Feedback Report</span>
                                                    <br/>
                                                </center>
                                            </h4>
                                        </td>
                                    </tr>
                                </table>
                                <table class='table2' cellspacing='0' cellpadding='5'>
                                    <tr>
                                        <th class="header1">Financial Year</th>
                                        <th class='header1'> Course Type </th>
                                        <th class="header1">Course</th>
                                        <th class="header1">Training</th>
                                        <th class='header1'> Employee </th>
                                        <th class="header1">Question</th>
                                        <th class="header1">Marks</th>
                                        <th class="header1">Remarks</th>
                                    </tr>
                                    <t t-foreach="docs" t-as="participant">
                                        <tr>
                                            <td class="column1">
                                                <span t-esc="participant.financial_year.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.course_type_id.skill_type"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.course_id.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.training_id.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.emp_id.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.question_id.question"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.mark"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="participant.remark"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
    </template>


    <record id="participants_feedback_report_paperformat" model="report.paperformat">
        <field name="name">Participants Feedback Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>
    

    <report string="Participants Feedback Report"
    id="participants_feedback_report"
    model="kw_participants_feedback_report"
    report_type="qweb-pdf" 
    attachment_use="True" 
    name="kw_training.participants_feedback_report_template"
    file="kw_training.participants_feedback_report_template"
    paperformat="kw_training.participants_feedback_report_paperformat"
     />


</odoo>
