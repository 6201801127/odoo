        <record id="kw_session_attendance_report_search" model="ir.ui.view">
			<field name="name">kw_session_attendance_report_search</field>
			<field name="model">kw_session_attendance_report</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search  string="kw_session_attendance_report_search" >
                    <field name="date" />
                    <field name="training_id" />
                    <field name="session_id" />
                    <field name="participant_id" />
                    <field name="emp_code"/>
                    <field name="designation"/>
                    <field name="department_id"/>
                    <field name="attendance" />
                    <group expand="0" string="Group By">
                        <!-- <filter name="session_wise_report" string="Session Wise Report" domain="[]" context="{'group_by':'session_id'}"/> -->
                        <filter name="employeewise_report" string="Employee Wise Report" domain="[]" context="{'group_by':'participant_id'}"/>
                        <!-- <filter name="present_participant" string="Present Participant" domain="[('attendance','=','P')]"/>
                        <filter name="absent_participant" string="Absent Participant" domain="[('attendance','=','A')]"/> -->

                    </group>
                </search>
			</field>
		</record>

        <!-- kw_session_attendance_report pivot view -->
        <record id="kw_session_attendance_report_view_pivot" model="ir.ui.view">
            <field name="name">kw_session_attendance_report.view.pivot</field>
            <field name="model">kw_session_attendance_report</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <!-- Add your fields here -->
                    <field name="participant_detail"  type="row"/>
                    <field name="session_id"  type="col"/>
                    <field name="attendance" type="col"/>
                    <field name="attendance" type="measure"/>

                </pivot>
            </field>
        </record>
       
        
        

        <!-- Main window action for "model" -->
        <record id="kw_session_attendance_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Session Attendance Report</field>
            <field name="res_model">kw_session_attendance_report</field>
            <field name="view_mode">pivot</field>
            <field name="context">{'search_default_session_wise_report':1}</field>
        </record>
        
        

        <menuitem name="Session Attendance Report"
         parent="kw_training.menu_kw_training_report" 
         id="session_attendance_report_menu" 
         action="action_view_session_attendance_wizard"
         sequence="420"/>

    </data>
</odoo>
