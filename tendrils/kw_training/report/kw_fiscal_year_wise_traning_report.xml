<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_fiscal_year_wise_training_report_tree" model="ir.ui.view">
            <field name="name">view.kw_participant_feedback_report.tree</field>
            <field name="model">training_fiscalyear_wise_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <tree string="kw training fiscal year wise report"  create='0' edit='0' delete='0' import='0'>
                    <field name="fiscal_year" />
                    <field name="emp_code" />
                    <field name='emp_name' />
                    <field name='designation'/>
                    <field name="department_id"/>
                    <field name="participant_id" invisible='1'/>
                    <field name="training_id" />
                    <field name="duration" />
                    
                </tree>
            </field>
        </record>
        <record id="view_fiscal_year_wise_training_report_search" model="ir.ui.view">
            <field name="name">View Fiscal Year Wise Training Search</field>
            <field name="model">training_fiscalyear_wise_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="">
                    <field name="fiscal_year" />
                    <field name="participant_id"/>
                    <field name="department_id"/>
                    <field name="training_id"/>
                    <field name="duration"/>
                    <group expand="0" string="Group By">
                        <filter name="fiscalyear_wise_report" string="Financial Year" domain="[]" context="{'group_by':'fiscal_year'}"/>
                    </group>
                </search>
            </field>
        </record>

       
        
        

        <!-- Main window action for "model" -->
        <record id="action_fiscal_year_wise_training_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Fiscalyear Wise Training Report</field>
            <field name="res_model">training_fiscalyear_wise_report</field>
            <field name="context">{'search_default_fiscalyear_wise_report':1 }</field>
            <field name="view_mode">tree</field>
        </record>
        
        

        <menuitem name="Fiscal Year Wise Report"
         parent="kw_training.menu_kw_training_report" 
         id="fiscal_year_wise_training_report_menu" 
         action="action_fiscal_year_wise_training_report_act_window"
         sequence="320"/>

    </data>
</odoo>