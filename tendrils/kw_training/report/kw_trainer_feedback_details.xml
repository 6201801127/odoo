<odoo>
    <template id="trainer_feedback_report_template">
        <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <style>
						.main_div{margin-top:0;width:85%;margin-left:90px}
						.second_div{font-size:13.5px}
						.table1{width:100%;}
						.row1{width:100%;}
						.company{background-color: #e6e6e6;border: 1px solid gray;vertical-align:middle;height:50px;padding: 2px 5px 0px 157px;   font-family:Verdana, Geneva, sans-serif;border-bottom:0px none;}
						.table2{width:100%;border: 1px solid gray;border-collapse: collapse;border-top:0px none;margin-top:10px;}
                        .column1{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px;width:19%}
                        .header1{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px;width:19%}
                        .table3{width:100%;}
                        .sl_num{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px;width:5%}
                        .report{ background-color: #e6e6e6;border: 1px solid gray;vertical-align:middle;height:50px;padding: 2px 5px 0px 157px;font-family:Verdana, Geneva, sans-serif;border-top:0px none;}
                    </style>
                    <div class='main_div'>
                        <div class='second_div'>
                            <div class="col-xs-12 mt-0 pt-0">
                                <table class='table1' cellspacing='0' cellpadding='5'>
                                    <tr class='row1'>
                                        <td class='company'>
                                            <h4>
                                                <b>
                                                    <span>CSM Technologies Private Limited</span>
                                                </b>
                                            </h4>
                                        </td>
                                    </tr>
                                    <tr class='report'>
                                        <td>
                                            <h4>
                                                <center>
                                                    <span>Trainer Feedback Report</span>
                                                    <br/>
                                                </center>
                                            </h4>
                                        </td>
                                    </tr>
                                </table>
                                <table class='table2' cellspacing='0' cellpadding='5'>
                                    <tr>
                                        <th class='header1'>Financial Year</th>
                                        <th class="header1">Course Type</th>
                                        <th class="header1">Course</th>
                                        <th class="header1">Training</th>
                                        <th class="header1">Participant</th>
                                        <th class="header1">Designation</th>
                                        <th class="header1">Department</th>
                                        <th class="header1">Proficiency</th>
                                        <th class="header1">Remark</th>
                                    </tr>
                                    <t t-foreach="docs" t-as="trainer">
                                        <tr>
                                            <td class="column1">
                                                <span t-esc="trainer.financial_year.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.course_type_id.skill_type"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.course_id.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.training_id.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.participant_id.name"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.designation"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.department"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.proficiency"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="trainer.remark"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                <!-- </t> -->
            </t>
        </t>
    </template>
    <record id="kw_training_trainer_feedback_report_paperformat" model="report.paperformat">
        <field name="name">Trainer Feedback Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>

    <report string="Trainer Feedback Report" id="trainer_feedback_report" model="kw_training_trainer_feedback_details" report_type="qweb-pdf" attachment_use="True" name="kw_training.trainer_feedback_report_template" file="kw_training.trainer_feedback_report_template" paperformat="kw_training.kw_training_trainer_feedback_report_paperformat" />
</odoo>
