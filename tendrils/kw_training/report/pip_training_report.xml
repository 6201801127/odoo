<odoo>
    <data>

    <!-- Tree View -->
        <record id="view_kw_training_recommendation_report_tree" model="ir.ui.view">
            <field name="name">kw.training.recommendation.report.tree</field>
            <field name="model">kw_pip_training_recommendation_report</field>
            <field name="arch" type="xml">
            <tree create='false' import='false' delete='false' string="Training Recommendation Report">
                <field name="financial_year"/>
                <field name="pip_ref"/>
                <field name="employee_id" string="Employee"/>
                <field name="course_type_id"/>
                <field name="course_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="raised_by" string="Raised By"/>
                <field name="applied_date"/>
                <field name="assessment_score"/>
            </tree>
            </field>
        </record>
    <!-- Action -->

        <record id="action_kw_training_recommendation_report" model="ir.actions.act_window">
            <field name="name">Training Recommend Report</field>
            <field name="res_model">kw_pip_training_recommendation_report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_kw_training_recommendation_report_tree"/>
        </record>
    <!-- Menu Item -->

        <menuitem id="menu_kw_training_recommendation_report"
            name="PIP Training Report"
            parent="kw_training.menu_kw_training_report"
            action="action_kw_training_recommendation_report"
            sequence="500"/>


    </data>

</odoo>
