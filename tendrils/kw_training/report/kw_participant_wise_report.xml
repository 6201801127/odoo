<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_participant_wise_report_tree" model="ir.ui.view">
            <field name="name">view.kw_participant_wise_report.tree</field>
            <field name="model">kw_participant_wise_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_participant_wise_report_tree" create="true" delete="true" edit="true">
                    <field name="financial_year" />
                    <field name="topic" />
                    <field name="employee_name" />
                    <field name="session_attended" />
                    <field name="pretest_score" />
                    <field name="posttest_score" />
                    <field name="improvements" />
                </tree>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_kw_participant_wise_report_search" model="ir.ui.view">
            <field name="name">view.kw_participant_wise_report.search</field>
            <field name="model">kw_participant_wise_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_participant_wise_report_search">
                     <field name="financial_year" />
                    <field name="topic" />
                    <field name="employee_name" />
                </search>
            </field>
        </record>
        
        <!-- model.name pivot view -->
        <record id="model_kw_participant_wise_report_view_pivot" model="ir.ui.view">
            <field name="name">model.kw_participant_wise_report.view.pivot</field>
            <field name="model">kw_participant_wise_report</field>
            <field name="arch" type="xml">
                <pivot string="Participant Wise Report"> 
                    <field name="employee_name" type="row"/>
                    <field name="topic" type="col"/>                    
                    <field name="pretest_score" type="measure"/>
                    <field name="posttest_score" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="action_kw_participant_wise_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Participant Wise Report</field>
            <field name="res_model">kw_participant_wise_report</field>
            <field name="view_mode">tree,pivot</field>
        </record>
        
        <!-- Main menu for "model" -->
        <!-- <menuitem id="menu_participant_wise_report" name="Participant Wise Report" parent="menu_kw_training_report" action="action_kw_participant_wise_report_act_window"/> -->

    </data>
</odoo>
