<?xml version="1.0"?>
<odoo>
    <data>
        <record id="training_assessment_notification_mail" model="mail.template">
            <field name="name">Training Assessment: Notification For Participants</field>
            <field name="model_id" ref="kw_training.model_kw_training_assessment"/>
            <field name="subject">Training Assessment Notification : ${object.name}</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${(ctx.get('participants') if ctx.get('participants') else ''|safe)}</field>
            <field name="email_cc">${(ctx.get('cc_emails') if ctx.get('cc_emails') else ''|safe)}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Dear Participants
                                        </span>
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        % if object.test_type and object.training_id:
                                        This is a ${object.test_type.capitalize()}-Training assessment schedule for ${object.training_id.name}.
                                        %endif
                                    </p>
                                </div>

                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Training Name
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            % if object.training_id:
                                            ${object.training_id.name}
                                        %endif

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Assessment Mode
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            % if object.assessment_type:
                                            ${object.assessment_type.capitalize()}
                                        %endif

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Date
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            % if object.date:
                                            ${format_tz(object.date, format='%d-%b-%Y')}
                                        %endif

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            From
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            % if object.from_time:

                                            ${datetime.datetime.strptime(object.from_time,"%H:%M:%S").strftime("%I:%M %p")}
                                        %endif

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            To
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            % if object.to_time:

                                            ${datetime.datetime.strptime(object.to_time,"%H:%M:%S").strftime("%I:%M %p")}
                                        %endif

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"width="200px">
                                            Duration
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            % if object.duration:

                                            ${object.duration}
                                        %endif

                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
             ]]>
            </field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>