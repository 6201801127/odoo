<openerp>
    <data>

        <record id="training_paperformat_certificate" model="report.paperformat">
            <field name="name">Training Certificate Paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_spacing">0</field>
            <field name="dpi">110</field>
        </record>

        <template id="training_certifcate_download_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc">

                        <div style="width:1400px;height:1030px;margin:auto; background-image: url(./kw_training/static/img/moderndornet.jpg);background-repeat: no-repeat; background-size: cover; font-family: sans-serif;">
                            <div style="padding: 410px 0 0 76px;">
                                <p style="font-size: 24px;font-weight: 500;margin: 0;color: #373737;">This certificate is awarded to </p>
                                <p style="font-size: 35px;font-weight: 600;margin: 1rem 0 0.5rem 0;color: #3f3f3f;">
                                    <t t-esc="doc.trainee_id.name"/>

                                </p>
                                <p style="font-size: 24px;font-weight: 500;margin: 0;color: #373737;">for successfully completing the training</p>
                                <p style="font-size: 35px;font-weight: 600;margin: 0.5rem 0 0.5rem 0;color:#3a3a3c">
                                    <t t-esc="doc.training_id.name"/>
                                </p>
                                <p style="font-size: 24px;font-weight: 500;margin: 0.5rem 0 110px 0;color: #373737;">from <t t-esc="doc.start_date.strftime('%d')"/>  
                                    <t t-esc="doc.start_date.strftime('%B %Y')"/> 
                                    to <t t-esc="doc.end_date.strftime('%d')"/>  
                                    <t t-esc="doc.end_date.strftime('%B %Y')"/>.</p>
                    
                                <p style="font-size: 24px;">Date: <strong><t t-esc="datetime.datetime.now().strftime('%d %B %Y')"/></strong></p>

                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        

        <report file="Generate Certificate"
                id="download_training_certification"
                menu="False"
                model="kw_training_certificate_generate"
                name="kw_training.training_certifcate_download_template"
                report_type="qweb-pdf"
                string="Training Certificate"
                paperformat="kw_training.training_paperformat_certificate"/>
        
