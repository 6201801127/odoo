
<odoo>
	<data>
        <record id="training_plan_annouce_mail" model="mail.template">
            <field name="name">Training Plan: Applied</field>
            <field name="model_id" ref="kw_training.model_kw_training_plan"/>
            <field name="subject">${object.training_id.name} - Plan 
                % if object.state=='approved':
                    Approved
                % endif
                % if object.state=='rejected':
                    Rejected
                % endif</field>
            <field name="email_from">tendrils@csm.tech</field>
            <!-- <field name="email_to">kwcr@csm.tech</field> -->
            <field name="email_to">${ctx['email_to']}</field>

            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear  ${ctx['emp_name']},</span>
                                    </h5>
                                    <br/>
                                    <span style="font-size: 16px;margin-right: 2px;font-weight: 600;">
                                        We are excited to announce an upcoming training session:
                                        
                                    </span>
                                    
                                </div>
                                <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;margin-left: 1.2rem;">
                                    <tr>
                                        <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Training Title </th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Technology </th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Start Date</th>
                                        
                                    </tr>
                                    <tr>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.training_id.name}
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.training_id.course_id.name}
                                        </td>
                                        
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.period_from, format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                </table>
                                <br/>
                                <div style="font-size: 16px;margin-right: 2px;font-weight: 600;margin-left: 1.2rem;"
                                    <p>
                                        Please take a moment to nominate yourself via Tendrils Training Calendar if you believe this session 
                                        would benefit you. Your active participation is crucial in maximizing the value of this training opportunity. 
                                    </p>
                                </div>

                            </td>
                        </tr>
                    </thead>
                </table>
                ]]>
            </field>
        </record>
        
	</data>
</odoo>