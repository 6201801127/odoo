
<odoo>
    <data>
        <record id="training_certification_mail_template" model="mail.template">
            <field name="name">Training Certification Mail Template</field>
            <field name="model_id" ref="model_kw_training_certificate_generate"/>
            <field name="subject"> Training Completion and Certificate </field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${(object.trainee_id.work_email)}</field>
            <field name="email_cc">bishnu.rath@csm.tech</field>
            <field name="body_html">
                <![CDATA[
                <div style="padding-left: 20px;">
                     <p>
                        <b>
                            <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Dear </span>
                            <span style="font-size: 18px;">${object.trainee_id.name},</span>
                        </b>
                    </p>
                    <p><b>Congratulation!!! </b></p>
                    <p>We are pleased to inform you that you have successfully completed the <b>${ctx['training_name']}</b>.
                     You can download your certificate of completion by clicking on the button below.</p>
                    

                    <a href="/get-generated-certificate-details/${ctx['record_id']}/${ctx['employee_id']}" target="_blank"&amp;model=kw_training_certificate_generate" target="_blank"
                      style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #30a20f;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: none;">
                        Download Certificate
                    </a>
                    <p>Best regards,</p>
                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                        % if object.env.user and object.env.user.signature:
                            ${object.env.user.signature | safe}
                        % else:
                            ${object.env.user.name | safe}
                        % endif
                    </p>
                   
                    
                </div>
            ]]>
               
                
            </field>
        </record>
    </data>
</odoo>
