<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

			<record id="user_login_detail_model_search" model="ir.ui.view">
					<field name="name">user_login_detail.model.search</field>
					<field name="model">user_login_detail</field>
					<field name="arch" type="xml">
						<search string="User Details">
							<field name="date_time" string="Login Date"/>
							<field name="user_id" string="User Name" />
							<field name="status" string="Status"/>
							<filter string="Success" domain="[('status','=','Success')]" name="Success"/>
							<filter string="Failed" domain="[('status','=','Failed')]" name="Failed"/>
						</search>
					</field>
			</record>

		<record model="ir.ui.view" id="user_login_detail_form_view">
			<field name="name">User Login Details</field>
			<field name="model">user_login_detail</field>
			<field name="arch" type="xml">
				<form create='false' edit='false'>
					<sheet>
						<group>
							<field name="emp_code"/>
							<field name="name"/>
							<field name="date_time"/>
							<field name="ip_address"/>
							<field name="status"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="user_login_detail_tree_view">
			<field name="name">User Login Details</field>
			<field name="model">user_login_detail</field>
			<field name="arch" type="xml">
				<tree create='false' edit='false'>
					<field name="emp_code"/>
					<field name="name"/>
					<field name="date_time"/>
					<field name="ip_address"/>
					<field name="status"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="login_user_detail_action_window">
			<field name="name">User Login Details</field>
			<field name="res_model">user_login_detail</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>