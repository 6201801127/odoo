<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record model="ir.ui.view" id="kw_discuss_usability_form_view">
            <field name="name">Discuss Usability</field>
            <field name="model">kw_discuss_usability</field>
            <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirm" string="Confirm" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="no_of_user"/>
                        <field name="direct_message"/>
                        <field name="group_message"/>
                        <field name="total_message"/>
                    </group>
                     <group>
                        <field name="users_participated"/>
                        <field name="groups_created"/>
                        <field name="total_active_groups"/>
                        <field name="most_active_member"/>
                        <field name="most_active_group"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_discuss_usability_tree_view">
            <field name="name">Discuss Usability</field>
            <field name="model">kw_discuss_usability</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="no_of_user"/>
                    <field name="users_participated"/>
                    <field name="direct_message"/>
                    <field name="group_message"/>
                    <field name="groups_created"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="kw_discuss_usability_action_window">
            <field name="name">Discuss Usability</field>
            <field name="res_model">kw_discuss_usability</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                     No records found...
                </p>
            </field>
        </record>
  </data>
</odoo>