<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="kw_discuss_usability_report"
        string="Print Report"
        model="kw_discuss_usability"
        report_type="qweb-pdf"
        name="kw_usability.kw_print_discuss_usability"
        file="kw_usability.kw_print_discuss_usability"
        print_report_name="'Discuss usability - %s' % (object.date)"
    />

    <template id="kw_print_discuss_usability">
        <t t-call="web.basic_layout">
            <div class="page">
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th class='text-center' rowspan='2'> SL # </th> 
                                    <th class='text-center' rowspan='2'> Date  </th> 
                                    <th class='text-center' rowspan='2'> No of User Logged IN </th> 
                                    <th class='text-center' rowspan='2'> Users Participated In Chat </th> 
                                    <th class='text-center' colspan='3'> Message posted </th> 
                                    <th class='text-center' colspan='3'>Channels</th>
                                    <th class='text-center' rowspan='2'> Most Active Member </th> 
                                    <th class='text-center' rowspan='2'> Most Active Group </th> 
                                </tr>

                                <tr>
                                    <th class='text-center'>Direct Message </th>
                                    <th class='text-center'>Group Message</th>
                                    <th class='text-center'>Total</th>
                                    <th class='text-center'>Groups Created </th>
                                    <th class='text-center'>Total Active Groups</th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-set='count' t-value="1"/>
                                <t t-foreach="docs" t-as="date">
                                <tr>
                                    <td class='text-center'><t t-esc="count"/></td>
                                    <td class='text-center'><t t-esc="date.date"/></td>
                                    <td class='text-center'><t t-esc="date.no_of_user"/></td>
                                    <td class='text-center'><t t-esc="date.users_participated"/></td>
                                    <td class='text-center'><t t-esc="date.direct_message"/></td>
                                    <td class='text-center'><t t-esc="date.group_message"/></td>
                                    <td class='text-center'><t t-esc="date.total_message"/></td>
                                    <td class='text-center'><t t-esc="date.groups_created"/></td>
                                    <td class='text-center'><t t-esc="date.total_active_groups"/></td>
                                    <td class='text-center'></td>
                                    <td class='text-center'><t t-esc="date.most_active_member"/></td>
                                    <td class='text-center'><t t-esc="date.most_active_group"/></td>
                                </tr>
                                <t t-set="count" t-value="count+1"/>
                                </t>
                            </tbody>
                    </table>
            </div>
        </t>
    </template>
</odoo>