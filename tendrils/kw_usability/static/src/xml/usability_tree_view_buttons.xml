<?xml version="1.0" encoding="UTF-8"?>
<templates>
	<t t-extend="ListView.buttons">
		<t t-if="widget and widget.modelName === 'kw_discuss_usability'" t-jquery="button.o_list_button_add" t-operation="after">

			<div class="row" t-if="widget and widget.modelName == 'kw_discuss_usability'" >
				<div>
					<select id="years" class="o_input" style='height:30px;width:200px;margin-left:15px;'>
						<option selected="" value="0">Select Year</option>
						<option value="2019">2019</option>
						<option value="2018">2018</option>
						<option value="2017">2017</option>
						<option value="2016">2016</option>
						<option value="2015">2015</option>

					</select>
				</div>
				<div>
					<select id="months" class="o_input" style='height:30px;width:200px;margin-left:10px;'>
						<option selected="" value="0">Select Month</option>
						<option value="Jan">Janaury</option>
						<option value="Feb">February</option>
						<option value="Mar">March</option>
						<option value="Apr">April</option>
						<option value="May">May</option>
						<option value="Jun">June</option>
						<option value="Jul">July</option>
						<option value="Aug">August</option>
						<option value="Sep">September</option>
						<option value="Oct">October</option>
						<option value="Nov">November</option>
						<option value="Dec">December</option>
					</select>
				</div>
				<button style='margin-left:10px;' t-if="widget and widget.modelName == 'kw_discuss_usability'"
				        class="btn btn-info o_list_search_button_all" type="button">Search</button>
			</div>
		</t>
	</t>
</templates>