<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_employee_social_image_tree_view">
            <field name="name">kw_employee_social_image_tree_view</field>
            <field name="type">tree</field>
            <field name="model">kw_employee_social_image</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="social_image" string="Profile picture" widget='image'/>
                    <field name="emp_id" string="Employee"/>
                    <field name="no_of_skip" string='No of Skip'/>
                    <field name="is_sync" string='Sync Status' widget="boolean_toggle"/>
                    <field name="image_name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <!-- Kanban view -->
        <record id="kw_employee_social_image_kanban" model="ir.ui.view">
            <field name="name">kw_employee_social_image_kanban</field>
            <field name="model">kw_employee_social_image</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="emp_id" string="Employee"/>
                    <field name="no_of_skip" string='No of Skip'/>
                    <field name="social_image" string="Profile picture" widget='image'/>
                    <field name="is_sync" string='Sync Status'/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click col-sm-3">
                                <div class="o_kanban_image media mr-3" style="min-height:20px">
                                    <img alt="Avatar" t-att-src="kanban_image('kw_employee_social_image', 'social_image',record.id.raw_value)" class="align-self-center"/>
<!--                                    <field name="social_image" string="Profile picture" widget='image' t-att-class="align-self-center"/>-->
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                </div>
                                    
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="kw_employee_social_image_form_view" model="ir.ui.view">
            <field name="name" >kw_employee_social_image_form_view</field>
            <field name="model">kw_employee_social_image</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="emp_id" string="Employee" options="{'no_open':True,'no_create':True}"/>
                                <field name="no_of_skip" string='No of Skip' readonly="1"/>
                                <field name="image_name"  widget="FieldBinary" string='Image Name' readonly="1" force_save="1"/>
                                <field name="social_image" filename='image_name' string="Profile picture" widget='image'/>
                                <field name="is_sync" string='sync status' groups="base.group_no_one"/>
                                <field name="skip_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- <record id="hr.menu_human_resources_configuration" model="ir.ui.menu">
            <field name="name">field_value</field>
        </record> -->
       
        <record id="kw_employee_social_image_action_window" model="ir.actions.act_window">
            <field name="name">Employee Candid Image</field>
            <field name="res_model">kw_employee_social_image</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Upload a new Employee Candid Image
                </p>
                
            </field>
        </record>
    </data>
</odoo>