<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_employee_social_notify_view_kanban" model="ir.ui.view">
            <field name="name">kw_employee_social_notify.kanban</field>
            <field name="model">kw_employee_social_notify</field>
            <field name="arch" type="xml">
                <kanban create="false" edit="false" delete="false">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <t t-if="record.name.raw_value == 'Sync'">
                                <div class="text-center">
                                    <div class="text-center">
                                        <p class='h3 mt-2 '>Sync to Website</p>
                                        <p class='text-justify mt-2'>
                                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                            when an unknown printer took a galley of type.
                                        </p>
                                        <button class="btn btn-primary " name="sync_now" type="object">
                                            <i class="fa fa-refresh" /> &amp;nbsp;Sync Now
                                        </button>
                                    </div>
                                </div>
                            </t>
                            <t t-if="record.name.raw_value == 'Notify'">
                                <div class="text-center">
                                    <div class="text-center">
                                        <p class='h3 mt-2 '>Notification Master</p>
                                        <p class='text-justify mt-2'>
                                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                            when an unknown printer took a galley of type.
                                        </p>
                                        <button class="btn btn-primary " name="notify" type="object">
                                            <i class="fa fa-refresh" /> &amp;nbsp;Schedule / Notify Users
                                        </button>
                                    </div>
                                </div>
                            </t>
                            <t t-if="record.name.raw_value == 'Image'">
                                <div class="text-center">
                                    <div class="text-center">
                                        <p class='h3 mt-2'>Employee Candid Picture Master</p>
                                        <p class='text-justify mt-2'>
                                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                            when an unknown printer took a galley of type.
                                        </p>
                                        <button class="btn btn-primary " name="profile_picture" type="object">
                                            <i class="fa fa-refresh" /> &amp;nbsp;Upload Employee Candid Picture
                                        </button>
                                    </div>
                                </div>
                            </t>
                            <t t-if="record.name.raw_value == 'Log'">
                                <div class="text-center">
                                    <div class="text-center">
                                        <p class='h3 mt-2'>Sync Log</p>
                                        <p class='text-justify mt-2'>
                                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                            when an unknown printer took a galley of type.
                                        </p>
                                        <button class="btn btn-primary " name="sync_log" type="object">
                                            <i class="fa fa-refresh" /> &amp;nbsp;Show Sync Log
                                        </button>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- Main window action for "model" -->
        <record id="kw_social_image_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name"> Employee Candid Image</field>
            <field name="res_model">kw_employee_social_notify</field>
            <field name="view_mode">kanban</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>
        <!-- Main menu for "model" -->
        <record id="menu_kw_sync_with_career" model="ir.ui.menu" >
            <field name="name">Employee Candid Image</field>
            <field name="sequence" eval="1600" />
            <field name="action" ref="kw_social_image_act_window" />
            <field name="parent_id" ref="hr.menu_human_resources_configuration" />
        </record>
    </data>
</odoo>
