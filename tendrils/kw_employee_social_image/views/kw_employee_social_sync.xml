<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="kw_employee_social_sync_tree_view">
			<field name="name">kw_employee_social_sync_tree_view</field>
			<field name="type">tree</field>
			<field name="model">kw_employee_social_sync</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" string='Name'/>
					<field name="status" string="Status"/>
					<field name="payload" string='Payload'/>
				</tree>
			</field>
		</record>

		<record id="kw_employee_social_sync_form_view" model="ir.ui.view">
			<field name="name">kw_employee_social_sync_form_view</field>
			<field name="model">kw_employee_social_sync</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" string='Name'/>
							<field name="status" string="Status"/>
							<field name="payload" string='Payload'/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="kw_employee_social_sync_action_window" model="ir.actions.act_window">
			<field name="name">Sync Status</field>
			<field name="res_model">kw_employee_social_sync</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					View Website Sync Status
				</p>

			</field>
		</record>
	</data>
</odoo>