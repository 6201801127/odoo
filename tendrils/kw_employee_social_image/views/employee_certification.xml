<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="employee_certification" name="Employee Educational Certification">
            <t t-call="website.layout">
                <div class="container mt-5 mx-auto">
                    <div class="row">
                        <div class="offset-md-1 col-sm-10 offset-md-1">
                            <div class="card">
                                <div class="badge-dark card-header mb-4">
                                    <img src="/kwantify_theme/static/src/img/csm_logo.png" class="" alt="logo"/>
                                </div>
                                <div class="card-body p-2">
                                    <div class="d-flex justify-content-center">
                                        <div class="col-12 col-7 text-center">
                                            <div class=" px-md-5">
                                                <p class="text-primary h4">
                                                    Have you updated your Academic and Professional credentials in Tendrils?
                                                </p>
                                                    <!-- Please upload your educational and certification details. -->

                                                    <p class="h5 ml-4"><span class="text-success">If Yes</span>, then Please check "Your Profile" and confirm your credentials.</p>
                                                    <a class="btn btn-success mr-3 btn-md" t-attf-href="/redirect-employee-certfication">
                                                        <span style="font-weight:700;font-size:15px;">Confirm your credentials. &amp;nbsp;</span>
                                                    </a>
                                                    <br/><br/>
                                                    <p class="h5 ml-4"><span class="text-danger">If No</span>, then Please go to "Your Profile" and update your credentials.</p>
                                                    <a class="btn btn-success mr-3 btn-md" t-attf-href="/redirect-employee-certfication">
                                                        <span style="font-weight:700;font-size:15px;">Update your credentials. &amp;nbsp;</span>
                                                    </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-center mb-4">
                                    <!-- <a class="btn btn-success mr-3 btn-sm" t-attf-href="/redirect-employee-certfication">
                                        <span style="font-weight:700">Please, Update your credentials. &amp;nbsp;</span>
                                    </a> -->
                                    <t t-if="skip &lt; 5">
                                        <a class="btn btn-info btn-md" t-attf-href="/employee-certification/skip-submit">
                                            <span style="font-size:15px;">Skip &amp;nbsp;
                                            <i class="fa fa-arrow-circle-right"/></span>
                                        </a>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </t>
        </template>

        <template id="assets_employee_certification" inherit_id="kw_employee_social_image.employee_certification">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/kw_auth/static/src/css/style.css" />
                <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet' />
                <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
                <script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js"/>
            </xpath>
        </template>
    </data>
</odoo>