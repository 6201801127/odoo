<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="kw_employee_social_notify_tree_view">
			<field name="name">kw_employee_social_notify_tree_view</field>
			<field name="type">tree</field>
			<field name="model">kw_employee_social_notify</field>
			<field name="arch" type="xml">
				<tree>
					<field name="search_option" string='Search Option'/>
					<field name="department_ids" string="Department" widget='many2many_tags'/>
					<field name="division" string="Division" widget='many2many_tags'/>
					<field name="section" string="Practice" widget='many2many_tags'/>
					<field name="practice" string='Section' widget='many2many_tags'/>
					<field name="location_type" string='Location Type'/>
					<field name="location_ids" string='Location' widget='many2many_tags'/>
					<field name="from_date" string='From Date'/>
					<field name="to_date" string='To Date'/>
					<field name="searched_user" string='Employee' widget='many2many_tags'/>
				</tree>
			</field>
		</record>

		<record id="kw_employee_social_notify_form_view" model="ir.ui.view">
			<field name="name">kw_employee_social_notify_form_view</field>
			<field name="model">kw_employee_social_notify</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="search_option" string='Search Option' widget='radio'
								       options="{'horizontal':True}"/>
								<field name="department_ids" force_save='1'
								       domain="[('dept_type.code', '=', 'department')]" string="Department"
								       widget='many2many_tags' options="{'no_open':True,'no_create':True}"
								       attrs="{'invisible':[('search_option','=','by_user')],'required':[('search_option','=','by_hierarchy')]}"/>
								<field name="division" force_save='1' domain="[('dept_type.code', '=', 'division')]"
								       string="Division" widget='many2many_tags'
								       options="{'no_open':True,'no_create':True}"
								       attrs="{'invisible':[('search_option','=','by_user')]}"/>
								<field name="section" force_save='1' domain="[('dept_type.code', '=', 'section')]"
								       string="Practice" widget='many2many_tags'
								       options="{'no_open':True,'no_create':True}"
								       attrs="{'invisible':[('search_option','=','by_user')]}"/>
								<field name="practice" force_save='1' domain="[('dept_type.code', '=', 'practice')]"
								       string='Section' widget='many2many_tags'
								       options="{'no_open':True,'no_create':True}"
								       attrs="{'invisible':[('search_option','=','by_user')]}"/>
								<field name="location_type" string='Location Type' widget="radio"
								       options="{'horizontal':True}"/>
								<field name="location_ids" string='Location' widget='many2many_tags'
								       options="{'no_open':True,'no_create':True}"
								       attrs="{'invisible':[('location_type','=','all')]}"/>
								<field name="searched_user" string='Employee' widget='many2many_tags'
								       options="{'no_open':True,'no_create':True}"
								       attrs="{'required':[('search_option','!=','by_hierarchy')]}"/>
								<field name="from_date" string='From Date' required='1'/>
								<field name="to_date" string='To Date' required='1'/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="kw_employee_social_notify_action_window" model="ir.actions.act_window">
			<field name="name">Employee Candid Image</field>
			<field name="res_model">kw_employee_social_notify</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('name','=',False)]</field>
			<field name="context">{'customview':True}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Send a new Employee Candid Notification
				</p>

			</field>
		</record>
	</data>
</odoo>