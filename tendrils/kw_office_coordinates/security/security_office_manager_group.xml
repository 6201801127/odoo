        <record id="group_kw_office_manager" model="res.groups">
            <field name="name">Office Manager</field>
            <field name="category_id" ref="kw_office_coordinates.module_category_kw_office_coordinate"/>
            <field name="implied_ids" eval="[(4, ref('kw_office_coordinates.office_viewer_groups'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
