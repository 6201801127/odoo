<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- explicit kanban view for kw office co-ordinates : Opening -->
        <record id="kw_office_view_kanban" model="ir.ui.view">
            <field name="name">Office Kanban View</field>
            <field name="model">kw_office_coordinates</field>
            <field name="arch" type="xml">
                <kanban id="kanban">
                    <field name ="company_id"/>
                    <!-- <field name ="partner_id"/> -->
                    <field name="id"/>
                    <field name="country"/>
                    <field name="city" />
                    <field name="office_name"/>
                    <field name="office_addr"/>
                    <field name="office_phone" />
                    <field name="email" />
                    <field name="emp_code_prefix" attrs="{'readonly':[('id','>', 0)]}"/>
                    <field name="timezone" />
                    <field name="currency" />
                    <field name="photo" />
                    <field name="brief_profile" />
                    <templates style = "background-color:#f4f6f6 ">
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click ">
                                <div class="o_kanban_image">
                                    <img t-att-src = "kanban_image('kw_office_coordinates','photo',record.id.value)" align = "right" height="80px" width="80px" alt="Image"/>
                                </div>
                                <div class= "o_dropdown_kanban dropdown">

                                </div>
                                <div class="oe_kanban_body">
                                    <div align="left" style="padding-left:80px;">
                                        <strong>
                                            <big>
                                                <a type ="open">
                                                    <field name = "office_name" />
                                                </a>
                                            </big>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_details" style="padding-left:80px ;">
                                        <field name="office_addr" />
                                        <br/>
                                        <field name="office_phone" />
                                        <br/>
                                        <i>
                                            <field name="email" />
                                        </i>
                                        <br/>
                                    </div>
                                </div>
                                <div class = "oe_kanban_footer">
                                    <div class= "oe_kanban_footer_left"/>
                                    <div class= "oe_kanban_footer_left"/>
                                </div>
                                <div class = "oe_clear" />
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- explicit kanban view for kw office co-ordinates : Ending -->

        <!-- explicit Form view for kw office co-ordinates   : Opening -->
        <record id="kw_office_form_view" model="ir.ui.view">
            <field name="name">Office Coordinates</field>
            <field name="model">kw_office_coordinates</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name ="company_id"/>
                                <!-- <field name ="partner_id"/> -->
                                <field name="country" string="Country"/>
                                <field name="city" string="City"/>
                                <field name="office_name">Office Name</field>
                                <field name="office_addr">Office Address</field>
                                <field name="office_phone"/>
                                <field name="email"/>
                                <field name="emp_code_prefix"/>
                                <field name="timezone"/>
                                <field name="currency"/>
                                <field name="brief_profile"/>
                            </group>
                            <group>
                                <field name="photo"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit Form view for kw office co-ordinates   : Ending -->

        <!-- kw office co-ordinates actions window  : Opening -->
        <record id="kw_office_action_window" model="ir.actions.act_window">
            <field name="name">Office Coordinates</field>
            <field name="res_model">kw_office_coordinates</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No details found...
                </p>
            </field>
        </record>
        <!-- kw office co-ordinates actions window  : Ending -->

        <template id="assets_backend_office" name="office_js assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/kw_office_coordinates/static/src/js/query.js"></script>
            </xpath>
        </template>

    </data>
</odoo>
