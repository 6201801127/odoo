<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- explicit kanban view for kw office co-ordinates : Opening -->
        <record id="kw_office_contact_view_kanban" model="ir.ui.view">
            <field name="name">Office Contact Kanban View</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban id="kanban" create="false" edit="false">
                    <field name ="image"/>
                    <field name ="street"/>
                    <field name ="name"/>
                    <field name="id"/>
                    <field name="mobile"/>
                    <field name="email" />
                    <field name="website"/>
                    <templates style="background-color:#f4f6f6 ">
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click ">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('res.partner','image_medium',record.id.raw_value)" align="right" alt="image"/>
                                </div>
                                <div class="o_dropdown_kanban dropdown"/>
                                <div class="oe_kanban_body">
                                    <div align="left" style="padding-left:80px;">
                                        <strong>
                                            <big>
                                                <a type="open">
                                                    <field name="name" />
                                                </a>
                                            </big>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_details" style="padding-left:80px;">
                                        <field name="street" />
                                        <br/>
                                        <field name="mobile" />
                                        <br/>
                                        <i>
                                            <field name="website"/>
                                            <field name="email" />
                                        </i>
                                        <br/>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="oe_kanban_footer_left">
                                    </div>

                                    <div class="oe_kanban_footer_left">
                                    </div>
                                </div>
                                <div class="oe_clear" />
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- explicit kanban view for kw office co-ordinates : Ending -->

        <!-- kw office co-ordinates actions window  : Opening -->
        <record id="kw_office_cotact_action_window" model="ir.actions.act_window">
            <field name="name">Office Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No details found....
                </p>
            </field>
        </record>
        <!-- kw office co-ordinates actions window  : Ending -->

    </data>
</odoo>
