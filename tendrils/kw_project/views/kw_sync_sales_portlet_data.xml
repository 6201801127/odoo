<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_employee_sync_portlet_form_view" model="ir.ui.view">
            <field name="name">Portlet Sync Log</field>
            <field name="model">kw_sync_portlet_data</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Portlet Sync Log" create="false" edit="true" delete="false">
                    <header>
                        <button name="action_button_sync_record_opp_debt" type="object" string="Sync" class="btn-success"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="model_id" readonly="0"/>
                                <field name="rec_id" readonly="0"/>
                                <field name="create_date" string="Created On" readonly="1"/>
                                <field name="json_data"/>
                                <field name="response"/>   
                                <field name="status" readonly="0"/>
                            </group>
                        </group>
                    </sheet>
                </form>   
            </field>
        </record>

        <record id="kw_employee_sync_portlet_tree_view" model="ir.ui.view">
            <field name="name">Portlet Sync Log</field>
            <field name="model">kw_sync_portlet_data</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Portlet Sync Log" create="true" edit="false" import="false">
                    <field name="model_id" />
                    <field name="rec_id" />
                    <field name="json_data"/>
                    <field name="response"/>   
                    <field name="status" />
                </tree>
            </field>
        </record>
        
        <record id="kw_sales_portlet_sync_log_action" model="ir.actions.act_window">
            <field name="name">Portlet Sync Log</field>
            <field name="res_model">kw_sync_portlet_data</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="kw_sales_portlet_sync_data_menu"
                  parent="disable_debug_mode.menu_technical_developer"
                  name="Portlet Synchronized Data"
                  action="kw_sales_portlet_sync_log_action"
                  sequence="19"/>




















        <record id="portlet_recieved_log_tree" model="ir.ui.view">
            <field name="name">portlet_recieved_log_tree</field>
            <field name="model">kw_portlet_recieved_log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="rec_type"/>
                    <field name="rec_id"/>
                    <field name="changed_date"/>
                    <field name="updated_by"/>
                    <field name="status"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        <record id="portlet_recieved_log_form" model="ir.ui.view">
            <field name="name">portlet_recieved_log_form</field>
            <field name="model">kw_portlet_recieved_log</field>
            <field name="arch" type="xml">
                <form string="Portlet Received Log">
                    <sheet>
                        <group>
                            <field name="rec_type"/>
                            <field name="rec_id"/>
                            <field name="changed_date"/>
                            <field name="updated_by" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="status"/>
                            <field name="create_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_sales_portlet_recieved_log_action" model="ir.actions.act_window">
            <field name="name">Portlet Recieved Log</field>
            <field name="res_model">kw_portlet_recieved_log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="portlet_recieved_log_tree"/>
        </record>

        <menuitem id="kw_sales_portlet_recieved_data_menu"
                  parent="disable_debug_mode.menu_technical_developer"
                  name="Portlet Recieved Data"
                  action="kw_sales_portlet_recieved_log_action"
                  sequence="18"/>
    </data>
</odoo>
