<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_debtor_list_master_form" model="ir.ui.view">
            <field name="name">kw_debtor_list_master.form</field>
            <field name="model">kw_debtor_list_master</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="id"/>
                                <field name="kw_invoice_id" readonly='1'/>
                                <field name="wo_code" readonly='1'/>
                                <field name="invoice_no" readonly='1'/>
                                <field name="invoice_date"/>
                                <field name="invoice_amt" readonly='1'/>
                                <field name="pending_amt" readonly='1'/>
                                <field name="client_name" readonly='1'/>
                                <field name="csg" readonly='1'/>

                            </group>
                            <group>
                                <field name="active"/>
                                <field name="bad_debtor_provision_amt" readonly='1'/>
                                <field name="expected_date"/>
                                <field name="user_last_modified_date"/>
                            </group>
                            <group string="Action Log" >
                                <field name="action_log_ids"  nolabel="1" readonly='1'>
                                    <tree>
                                        <field name="action_taken_by_id"/>
                                        <field name="action_taken_date"/>
                                        <field name="changed_date"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_debt_port_form" model="ir.ui.view">
            <field name="name">kw_debt_port.form</field>
            <field name="model">kw_debtor_list_master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="expected_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_debtor_list_master_tree" model="ir.ui.view">
            <field name="name">kw_debtor_list_master.tree</field>
            <field name="model">kw_debtor_list_master</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="id"/>
                    <field name="kw_invoice_id"/>
                    <field name="wo_code"/>
                    <field name="invoice_no"/>
                    <!-- <field name="invoice_date"/> -->
                    <!-- <field name="invoice_amt"/> -->
                    <!-- <field name="pending_amt"/> -->
                    <field name="expected_date"/>
                    <field name="user_last_modified_date"/>
                    <field name="active" readonly='1'/>
                </tree>
            </field>
        </record>
        <record id="kw_debtor_list_master_act_window" model="ir.actions.act_window">
            <field name="name">Debtor List</field>
            <field name="res_model">kw_debtor_list_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_debtor_list_master_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('kw_debtor_list_master_form')})]"/>
        </record>
        <menuitem id="crm_v5_opp_debt_billing_menu" name="V5 Portlet Data" parent="crm.crm_menu_config" action="kw_debtor_list_master_act_window" sequence="99"/>
        <menuitem name="Debtor Data" id="debtor_list_menu_new" parent="crm_v5_opp_debt_billing_menu" action="kw_debtor_list_master_act_window" sequence='3'/>
    </data>
</odoo>