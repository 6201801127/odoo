<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="kw_project_inherit_crm_form" model="ir.ui.view">
            <field name="name">kw project inherit crm form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="inside">
                    <label for="code" class="oe_edit_only"/>
                    <h1>
                        <field name="code" placeholder="e.g. ABCD000EF0000"/>
                    </h1>
                </xpath>
                    <xpath expr="//group" position="after">
                        <group string="Authority Information">
                            <field name="pac_status" />
                            <field name="client_name"/>
                            <field name="client_short_name"/>
                            <field name="csg_name"/>
                            <field name="sales_person_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            
                            <field name="pm_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <!-- <field name="sbu_head_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/> -->
                            <field name="reviewer_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="ceo_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="csg_head_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <!-- <field name="hod_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/> -->
                            <field name="presales_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="cso_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="cfo_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                        </group>
                    </xpath>
            </field>
        </record>


        <record id="crm_stage_form_recruitment" model="ir.ui.view">
            <field name="name">crm.stage.form</field>
            <field name="model">crm.stage</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
