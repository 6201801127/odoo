<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="kw_project_resource_tagging_act_window" model="ir.actions.act_window">
            <field name="name">Resource Tagging</field>
            <field name="res_model">kw_project_resource_tagging</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <record id="kw_project_resource_tagging_form" model="ir.ui.view">
            <field name="name">kw_project_resource_tagging.form</field>
            <field name="model">kw_project_resource_tagging</field>
            <field name="arch" type="xml">
                <form string="Tagging" create='0' edit='0' delete='0'>
                    <group>
                        <group>
                            <!-- <field name="designation_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/> -->
                            <field name="designation"/>
                        </group>
                        <group>
                            <field name="emp_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="kw_project_resource_tagging_tree" model="ir.ui.view">
            <field name="name">kw_project_resource_tagging.tree</field>
            <field name="model">kw_project_resource_tagging</field>
            <field name="arch" type="xml">
                <tree string="Tagging" delete='0' default_order="emp_id,project_id">
                    <!-- <field name="designation_id" string='Project Designation'/> -->
                    <field name="designation" string='Project Designation'/>
                    <field name="emp_id"/>
                    <field name="reporting_id"/>
                    <field name="project_id" string='Project Name'/>
                    <field name="project_manager"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="kw_project_resource_tagging_search" model="ir.ui.view">
			<field name="name">kw_project_resource_tagging.search</field>
			<field name="model">kw_project_resource_tagging</field>
			<field name="arch" type="xml">
				<search string="Tagging Search">
                    <field name="emp_id"/>
					<field name="project_name"/>
					<field name="project_manager"/>
				</search>
			</field>
		</record>

        <menuitem id="kw_project_resource_tagging_menu" name="Resource tagging report" action="kw_project_resource_tagging_act_window" parent="project.menu_project_report" groups="project.group_project_manager" sequence="10"/>
        <!-- <menuitem id="kw_project_resource_tagging_in_employee_menu" name="Project Resource" action="kw_project.kw_project_resource_tagging_act_window" parent="kw_employee.kw_resource_skill_menu_root" sequence="2"/> -->

        <record model="ir.ui.menu" id="project.menu_project_tags_act">
            <field name="groups_id" eval="[(6,0,[ref('project.group_project_manager')])]"/>
        </record>

        <record model="ir.ui.menu" id="project.project_menu_config_activity_type">
            <field name="groups_id" eval="[(6,0,[ref('project.group_project_manager')])]"/>
        </record>

    </data>
</odoo>
