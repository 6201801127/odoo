<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_project.module_view_form" model="ir.ui.view">
            <field name="name">kw_project.module_form</field>
            <field name="model">kw_project.module</field>
            <field name="arch" type="xml">
                <form string="Project Module tagged">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="task_ids" widget='many2many_tags'/>
                            <field name="last_sync_date"/>
                        </group>
                       
                    </group>
                </form>
            </field>
        </record>

        <record id="kw_project.module_tree" model="ir.ui.view">
            <field name="name">kw_project.module.tree</field>
            <field name="model">kw_project.module</field>
            <field name="arch" type="xml">
                <tree string="Project Module">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="task_ids" widget='many2many_tags'/>
                    <field name="last_sync_date"/>
                </tree>
            </field>
        </record>
        <record id="kw_project.module_search" model="ir.ui.view">
			<field name="name">kw_project.module.search</field>
			<field name="model">kw_project.module</field>
			<field name="arch" type="xml">
				<search string="Project Module Search">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="task_ids" />
                    <field name="last_sync_date"/>
                    <group expand="1" string="Group By">
                        <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}"/>
                    </group>
				</search>
			</field>
		</record>

        <record id="kw_project.module_act_window" model="ir.actions.act_window">
            <field name="name">Module Tagging</field>
            <field name="res_model">kw_project.module</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="kw_project.module_menu" name="Project Module Tagging" action="kw_project.module_act_window"
        parent="project.menu_project_config" sequence="11" groups="project.group_project_manager"/>
       

    </data>
</odoo>