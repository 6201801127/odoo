<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_config_settings_sync_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.kw_sync</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="kw_kwantify_integration.res_config_settings_sync_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='employee_service_sync_days']" position="after">
                <div class="col-12 col-lg-12 o_setting_box" title="Project Web Service API" id="project_web_service_api">                           
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Project Web Service API</span>
                        <div class="text-muted">
                            Set the web service API for Project Data
                        </div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="kw_project_service_url" string="API"
                                    class="col-3 col-lg-3 o_light_label"/>
                                <field name="kw_project_service_url" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-12 o_setting_box" title="Project Service Sync Days" id="project_service_sync_days">                          
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Project Web Service Sync Days</span>
                        <div class="text-muted">
                            Set how many days before project info to be processed 
                        </div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="kw_project_service_days" string="Days"
                                    class="col-3 col-lg-3 o_light_label"/>
                                <field name="kw_project_service_days" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
