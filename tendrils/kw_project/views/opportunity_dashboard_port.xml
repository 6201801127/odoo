<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_opp_port_tree" model="ir.ui.view">
            <field name="name">kw_opp_port.tree</field>
            <field name="model">kw_opp_port</field>
            <field name="arch" type="xml">
                <tree  duplicate='0' delete='1' import = '0'>
                    <field name="id"/>
                    <field name="opp_id"/>
                    <field name="opp_code"/>
                    <field name="opp_name"/>
                    <field name="client_short_name"/>
                    <field name="client_name"/>
                    <field name="expected_closing_date"/>
                    <field name="user_last_modified_date"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="kw_opp_port_form" model="ir.ui.view">
            <field name="name">kw_opp_port.form</field>
            <field name="model">kw_opp_port</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="expected_closing_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_opp_port_view_form" model="ir.ui.view">
            <field name="name">kw_opp_port_view.form</field>
            <field name="model">kw_opp_port</field>
            <field name="arch" type="xml">
                <form  duplicate='0' delete='0' import = '0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="id"/>
                                <field name="opp_id" readonly='1'/>
                                <field name="opp_code" readonly='1'/>
                                <field name="opp_name" readonly='1'/>
                                <field name="client_short_name" readonly='1'/>
                                <field name="client_name" readonly='1'/>
                                <field name="a_manager" readonly='1'/>
                                <field name="csg" readonly='1'/>
                            </group>
                            <group>
                                <field name="amount" readonly='1'/>
                                <field name="pac_status" readonly='1'/>
                                <field name="expected_closing_date"/>
                                <field name="user_last_modified_date"/>
                                <field name="active"/>
                            </group>
                            <group string="Action Log" >
                                <field name="action_log_ids"  nolabel="1" readonly='1'>
                                    <tree>
                                        <field name="action_taken_by_id"/>
                                        <field name="action_taken_date"/>
                                        <field name="changed_date"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_opp_port_act_window" model="ir.actions.act_window">
            <field name="name">Opportunity Data</field>
            <field name="res_model">kw_opp_port</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_project.kw_opp_port_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('kw_project.kw_opp_port_view_form')})]"/>
        </record>
        <menuitem name="Opportunity Data" id="menu_opportunity_new" parent="crm_v5_opp_debt_billing_menu" action="kw_opp_port_act_window" sequence="2"/>
    </data>
</odoo>