<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_project_reminder_mail_template" model="mail.template">
            <field name="name">Project Reminder PM Regarding End Date</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Project Resource Allocation End Date Reminder | ${object.name}</field>
            <field name="email_to">${object.emp_id.work_email or ''}</field>
            <field name="email_cc">${object.get_cc_emails() or ''}</field>
            <field name="model_id" ref="kw_project.model_project_project"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
					<table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.emp_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        According to initial budget allocated to this Project <b>${object.name}</b> resources were allocated according to your EQ plan.
                                    </p>
                                </div>

								% if object.resource_id:
                                    <table border="1" style="border-collapse: collapse;font-size: 16px;margin-left:1.2rem;">
                                        <tr>
                                            <td style="font-weight:700;color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Resource Name
                                            </td>
                                            <td style="font-weight:700;color:#676767;padding-left: 1px;height: 34px;" width="200px">
                                                End date
                                            </td>
                                        </tr>
                                        % for resource in object.resource_id:

                                            % if (resource.end_date and resource.end_date == datetime.datetime.today().date() + relativedelta(days=15) or resource.end_date == datetime.datetime.today().date() + relativedelta(days=30)):
                                                <tr>
                                                    <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                        ${resource.emp_id.name}
                                                    </td>
                                                    <td style="color:#167b9e;height: 34px;">
                                                        ${format_tz(resource.end_date, format='%d-%b-%Y')}
                                                    </td>
                                                </tr>
                                            % endif
                                        % endfor
                                    </table>
                                % endif

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        If your project is  in schedule then please release the resources according to plan date else take approval of additional budget to continue with existing resources.
                                    </p><br/>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to view details.<br/>
                                        -----------------------------------------------------
                                        <br/>
                                        This is a system generated email. Please do not reply to this mail. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>

            </field>
        </record>
    </data>
</odoo>