<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>

            <record id="view_form_odoo_set_authority" model="ir.ui.view">
                <field name="name">odoo set authority form</field>
                <field name="model">odoo.setauthority</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>                           
                            <group>
                                <group>
                                    <field name="name" required="1"/>
                                    <field name="model_id" required="1"/>
                                </group>
                                <group>
                                    <field name="location_id" />
                                </group>
                            </group>
                            <notebook>
                                <page string="Fields">
                                    <!-- <button name="btn_load_groups"
                                            string="Load Model Groups"
                                            type="object"
                                            class="oe_highlight"/>  context="{'default_model_id':model_id}" -->

                                    <field name="authority_ids" />
                                </page>
                            </notebook>
                        </sheet>
                    </form>
                </field>
            </record>

            <record id="action_odoo_setauthority" model="ir.actions.act_window">
                <field name="name">Set Authority</field>
                <field name="res_model">odoo.setauthority</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
            </record>

            <menuitem id="menu_odoo_setauthority"
                    action="action_odoo_setauthority"
                    parent="menu_odoo_workflow_root"
                    name="Set Authority"
                    sequence="10"/>


        <!--
            Workflow Nodes Fields
        -->
        <record id="view_form_odoo_authorities" model="ir.ui.view">
            <field name="name">odoo authorities form</field>
            <field name="model">odoo_authorities</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Main Information">
                               <!--  <field name="model_id" invisible="1"/> -->
                                <field name="name" required="1" />
                            </group>
                            <!-- <group string="Attributes">
                                <field name="readonly"/>
                                <field name="required"/>
                                <field name="invisible"/>
                            </group> -->
                        </group>
                        <group string="Designation">
                            <field name="designation_ids" nolabel="1"/>
                        </group>
                        <group string="Groups">
                            <field name="group_ids" nolabel="1"/>
                        </group>
                        <group string="Users">
                            <field name="user_ids" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_odoo_authorities" model="ir.ui.view">
            <field name="name">odoo authorities tree</field>
            <field name="model">odoo_authorities</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                   <!--  <field name="model_id" invisible="1"/> -->
                    <field name="name" required="1" />
                  
                    <field name="designation_ids" widget="many2many_tags"/>
                    <field name="group_ids" widget="many2many_tags"/>
                    <field name="user_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>