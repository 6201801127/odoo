<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_res_branch_tree" model="ir.ui.view">
            <field name="name">kw_res_branch.tree</field>
            <field name="model">kw_res_branch</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="res_branch_tree" create="true" delete="true" edit="true">
                    <field name="branch_code" invisible="1"/>
                    <field name="kw_id"  invisible="1"/>
                    <field name="name" />
                    <field name="alias" />
                    <field name="address" />
                    <field name="city" />
                    <field name="email" />
                    <field name="telephone_no" />
                    <field name="guest_d" invisible='1'/>
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>
        
        <record id="kw_res_branch_form" model="ir.ui.view">
            <field name="name">kw_res_branch.form</field>
            <field name="model">kw_res_branch</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="res_branch_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="company_id"/>
				                <field name="location" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="alias" />
                                <field name="code" />
                                <field name="branch_code" />
                                <field name="kw_id" groups="base.group_no_one"/>
                                <field name="name" />
                                <field name="branch_unit_ids" invisible="1"/>
                                <field name="gst_no" />
                                <field name="email" />
                                <field name="inventory_ref" />
                                <field name="recruitment_ref" />
                            </group>
                            <group>
                                <label for="address" string="Address"/>
                                <div class="o_address_format">
                                    <field name="address" placeholder="Address..." class="o_address_street" />
                                    <div>
                                        <field name="city" placeholder="City" style="width: 50%"/>
                                        <field name="zipcode" placeholder="ZIP" style="width: 50%"/>
                                    </div>
                                    <div>
                                        <field name="state_id" class="o_address_zip" placeholder="State" domain="[('country','=',country)]" options="{'no_open': True,'no_create':True,'no_create_edit': True}" style="width: 50%"/>
                                        <field name="country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" style="width: 50%;float:left;"/>
                                    </div>
                                </div>
                                <field name="website" widget="url"/>
                                <field name="telephone_no" />
                                <field name="fax" />
                                <field name="guest_d" invisible='1'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_res_branch_kanban" model="ir.ui.view">
            <field name="name">kw_res_branch.kanban view</field>
            <field name="model">kw_res_branch</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors">
                    <field name="branch_code" invisible="1"/>
                    <field name="kw_id"  invisible="1"/>
                    <field name="name" />
                    <field name="alias" />
                    <field name="address" />
                    <field name="city" />
                    <field name="email" />
                    <field name="telephone_no" />
                    <field name="guest_d" invisible='1'/>
                    <field name="active" widget="boolean_toggle" />
                    <templates>
						<t t-name="kanban-box">
							<div class="oe_kanban_global_click">
	                            <div class="o_project_kanban_main">
	                                <div class="o_kanban_card_content">
	                                    <div class="o_kanban_primary_left">
	                                        <div class="o_primary">
	                                            <span><t t-esc="record.name.value"/></span>
	                                        </div>
	                                        <div >
	                                            <span t-if="record.address.raw_value"> 
                                                <strong> Address:   <field name="address" /></strong>
                                                </span>
	                                            
	                                        </div>
                                            <div class="oe_kanban_partner_links"/>
									        <div class="oe_footer">
										        <button type="object" name="btn_view_details" class="btn btn-primary">Branch
											        Details
										        </button>
                                               
									        </div>
	                                    </div>
	                                </div>
                                </div>
                            </div>
						</t>
					</templates>
                </kanban>
            </field>
        </record>

        <record id="kw_res_guest_branch_kanban" model="ir.ui.view">
		    <field name="name">kw_res_branch.kanban view</field>
	        <field name="model">kw_res_branch</field>
	        <field name="arch" type="xml">
	            <kanban import='false' create='false' class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors">
                    <field name="branch_code" invisible="1"/>
                    <field name="kw_id"  invisible="1"/>
                    <field name="name" />
                    <field name="alias" />
                    <field name="address" />
                    <field name="city" />
                    <field name="email" />
                    <field name="telephone_no" />
                    <field name="guest_d" invisible='1'/>
                    <field name="active" widget="boolean_toggle" />
                    <templates>
						<t t-name="kanban-box">
							<div class="oe_kanban_global_click">
	                            <div class="o_project_kanban_main">
	                                <div class="o_kanban_card_content">
	                                    <div class="o_kanban_primary_left">
	                                        <div class="o_primary">
	                                            <span><t t-esc="record.name.value"/></span>
	                                        </div>
                                            <div class="oe_kanban_partner_links"/>
									        
	                                    </div>
                                        
	                                </div>
                                    <div class="oe_footer">
										<button type="object" name="btn_view_details" class="btn btn-primary">Branch
											        Details
										</button>
                                        <button type="object" name="btn_view_guest_details" attrs="{'invisible':[('guest_d','!=',True)]}" class="btn btn-primary">Guest House
											        Details
										</button>
									</div>
                                </div>
                            </div>
						</t>
					</templates>
                </kanban>
            </field>
        </record>

        <record id="kw_res_branch_action_window" model="ir.actions.act_window">
            <field name="name">Branch/SBU</field>
            <field name="res_model">kw_res_branch</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">['|',('active', '=', False),('active', '!=', False)]</field>
        </record>
        <record id="kw_res_branch_guest_house_action_window" model="ir.actions.act_window">
            <field name="name">Office Location</field>
            <field name="res_model">kw_res_branch</field>
            <field name="view_mode">kanban</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_res_guest_branch_kanban')})]"/>
        </record>

        <menuitem name="Branch"
                  id="kw_res_branch_menu"
                  parent="base.menu_users"
                  action="kw_res_branch_action_window"
                  sequence='99'/>
<!--        <menuitem name="Office Location"-->
<!--                  id="branches_guest_house_menu"-->
<!--                  parent="ks_dashboard_ninja.board_menu_root"-->
<!--                  action="kw_res_branch_guest_house_action_window"/>-->
    </data>
</odoo>
