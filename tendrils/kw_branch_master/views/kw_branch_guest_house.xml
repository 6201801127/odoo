<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_res_guest_house_tree" model="ir.ui.view">
            <field name="name">kw_branch_guest_house.tree</field>
            <field name="model">kw_branch_guest_house</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="res_branch_tree" create="true" delete="true" edit="true">
                    <field name='branch_code'/>
                    <field name="guest_house_name"/>
                    <field name="address"/>
                    <field name="caretacker_name"/>
                    <field name="contact_number"/>
                </tree>
            </field>
        </record>

        <record id="kw_res_guest_house_form" model="ir.ui.view">
            <field name="name">kw_branch_guest_house.form</field>
            <field name="model">kw_branch_guest_house</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="res_branch_form" create="true" delete="true" edit="true">
                    <sheet>
                        <group>
                            <group>
                                <field name='branch_code' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="guest_house_name"/>
                                <field name="address"/>
                                <field name="caretacker_name"/>
                                <field name="contact_number"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_branch_guest_house_action_window" model="ir.actions.act_window">
            <field name="name">Guest House</field>
            <field name="res_model">kw_branch_guest_house</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id='branch_guest_house_menu'
                  name="Office Guest House"
                  action="kw_branch_guest_house_action_window"
                  parent="base.menu_users"
                  sequence="6"
        />
    </data>
</odoo>
        <!-- parent="ks_dashboard_ninja.board_menu_root" -->
