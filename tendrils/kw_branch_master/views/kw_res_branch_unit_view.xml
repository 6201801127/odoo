<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_res_branch_unit_tree" model="ir.ui.view">
            <field name="name">kw_res_branch_unit.tree</field>
            <field name="model">kw_res_branch_unit</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="kw_res_branch_unit_tree" >
                    <field name="name" />
                    <field name="address" />
                    <field name="phone_number" />
                    <field name="active" />
                 </tree>
            </field>
        </record>
        
        <record id="kw_res_branch_unit_form" model="ir.ui.view">
            <field name="name">kw_res_branch_unit.form</field>
            <field name="model">kw_res_branch_unit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="kw_res_branch_unit_form" >
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="name"/>
                                <field name="code"/>
                                
                                <label for="address" string="Address"/>
                                <div class="o_address_format">
                                    <field name="address" placeholder="Address..." class="o_address_street" />
                                </div>
                                 <field name="phone_number"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_res_branch_unit_action" model="ir.actions.act_window">
            <field name="name">Branch Unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_res_branch_unit</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                       Sorry no Branch unit Found...
                    </p>
                </field>
            </field>
        </record>

        <menuitem name="Branch Unit" id="kw_res_branch_unit_menu" parent="base.menu_users" action="kw_res_branch_unit_action" sequence='100'/>
    </data>
</odoo>
