<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="kw_location_master_tree" model="ir.ui.view">
            <field name="name">kw_location_master.tree</field>
            <field name="model">kw_location_master</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="res_branch_tree" editable="bottom">
                    <field name="name" />
                    <field name="country_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="date_tz"/>
                    <field name="kw_id" groups="base.group_no_one"/>
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <!-- search view -->
        <record id="kw_location_master_search_view" model="ir.ui.view">
            <field name="name">kw_location_master_search_view</field>
            <field name="model">kw_location_master</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <search string="Location">
                    <field name="name" string="Location"/>
                    <field name="country_id"/>
                    <field name="date_tz"/>
                    <filter string="Active" domain="[('active', '=',True)]" name="enable_organization_grade"/>
                    <filter string="Inactive" domain="[('active', '=',False)]" name="disable_organization_grade"/>
                </search>
            </field>
        </record>

        <record id="kw_location_master_action_window" model="ir.actions.act_window">
            <field name="name">Location</field>
            <field name="res_model">kw_location_master</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('active', '!=', False)]</field>
            <field name="search_view_id" ref="kw_location_master_search_view"/>
        </record>
        <menuitem name="Location" id="kw_location_master_menu" parent="base.menu_users"
		          action="kw_branch_master.kw_location_master_action_window" sequence="99"
		          groups="hr.group_hr_manager"/>

    </data>
</odoo>
