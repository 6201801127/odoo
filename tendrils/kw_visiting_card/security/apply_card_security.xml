<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_kw_visiting_card">
            <field name="name">Business Card</field>
            <field name="description">Access level for Business Card Requisition</field>
            <field name="sequence">11</field>
        </record>

        <record id="group_kw_visiting_card_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="kw_visiting_card.module_category_kw_visiting_card"/>
        </record>

        <record id="group_kw_visiting_card_manager" model="res.groups">
            <field name="name">Approver</field>
            <field name="category_id" ref="kw_visiting_card.module_category_kw_visiting_card"/>
            <!-- <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/> -->
        </record>

        <record id="group_kw_visiting_card_report_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_visiting_card.module_category_kw_visiting_card"/>
        </record>
        
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('kw_visiting_card.group_kw_visiting_card_user'))]"/>
        </record>

        <record id="rule_kw_visiting_card_user" model="ir.rule">
            <field name="name">User: View own request</field>
            <field name="model_id" ref="model_kw_visiting_card_apply"/>
            <field name="domain_force">['|',("create_uid", '=', user.id),('create_employee_id','in',user.employee_ids.child_ids.ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/><field name="groups" eval="[(4, ref('kw_visiting_card.group_kw_visiting_card_user'))]"/>
        </record>
        
        <record id="rule_kw_visiting_card_report_manager" model="ir.rule">
            <field name="name">Manager: only  view employee requests and reports</field>
            <field name="model_id" ref="model_kw_visiting_card_apply"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('kw_visiting_card.group_kw_visiting_card_report_manager'))]"/>
        </record>

        <record id="rule_kw_visiting_card_manager" model="ir.rule">
            <field name="name">Approver: No limit to view employee requests</field>
            <field name="model_id" ref="model_kw_visiting_card_apply"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('kw_visiting_card.group_kw_visiting_card_manager'))]"/>
        </record>
    </data>
</odoo>
