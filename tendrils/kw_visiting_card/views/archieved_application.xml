<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_archieved_application_tree_view" model="ir.ui.view">
            <field name="model">kw_visiting_card_apply</field>
            <field name="arch" type="xml">
                <tree string="" edit="false" create="false" import="false">
                    <field name="manager_access" invisible="1"/>
                    <field name="emp_name"/>
                    <field name="applied_date"/>
                    <field name="date_when_required"/>
                    <field name="no_of_cards_required"/>
                </tree>
            </field>
        </record>

        <record id="kw_archieved_application_form_view" model="ir.ui.view">
            <field name="model">kw_visiting_card_apply</field>
            <field name="arch" type="xml">
                <form string="" edit="false" create="false" action="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="manager_access" invisible="1"/>
                                <field name="applied_date"/>
                                <field name="date_when_required"/>
                                <field name="no_of_cards_required"/>
                                <!-- <field name="state" invisible="1" /> -->
                                <field name="remark"/>
                            </group>
                            <group>
                                <field name="card_details"/>
                            </group>
                            <group>
                                <field name="action_count" invisible="1"/>
                                <field name="action_ids" attrs="{'invisible': [('action_count','=', False)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_apply_card_archieved_search_view" model="ir.ui.view">
            <field name="model">kw_visiting_card_apply</field>
            <field name="arch" type="xml">
                <search>
                    <field name="emp_name"/>
                </search>
            </field>
        </record>
        <record id="kw_archieved_application_act_window" model="ir.actions.act_window">
            <field name="name">View Archieved Card</field>
            <field name="res_model">kw_visiting_card_apply</field>
            <field name="domain">['|',('state','in',['Delivered']),('active','=',False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_archieved_application_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_archieved_application_form_view')})]"/>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="kw_apply_card_archieved_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No archieved card Application...
                </p>
            </field>
        </record>
    </data>
</odoo>