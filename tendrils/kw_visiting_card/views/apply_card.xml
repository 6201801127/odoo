        <record id="kw_apply_card_status_act_window" model="ir.actions.act_window">
            <field name="name">Apply Card</field>
            <field name="res_model">kw_visiting_card_apply</field>
            <!-- <field name="domain">[('state','in',['Rejected','Delivered to User','Approved','Sent For Printing','Applied']),('active','=',False)]</field> -->
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <!-- <field name="context">{'ra_access_check':1}</field> -->
            <field name="search_view_id" ref="kw_apply_card_search_view"/>
            <!-- <field name="context">{"filter_data": 1,}</field> -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_apply_card_tree_view_only')}),
