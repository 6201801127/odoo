<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_status_visiting_card_email_template" model="mail.template">
            <field name="name">Status Business card e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Status of Business Card Application | ${object.state}</field>
            <field name="email_to">${object.get_employee_email() or ''}</field>
            <field name="email_cc">${object.get_ra_email() or ''}</field>
            <field name="model_id" ref="kw_visiting_card.model_kw_visiting_card_apply"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                    <![CDATA[

        <table border="0">
            <tr>
                <td>
                    <div style="margin-left: 1.2rem;margin-bottom:1em;">
                        <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                            <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                Dear ${object.get_employee_name()},
                            </span>
                        </h5>
                    
                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                            Your request for Business card has been
                            <b>
                            %if object.state == 'Delivered to User':
                                'Delivered'
                            %else:
                                ${object.state}
                            %endif
                            </b>
                            by ${ctx['user_name']}.
                        </p>
                    </div>
                </td>
            </tr>
        </table>

                    ]]>
            </field>
        </record>
    </data>
</odoo>