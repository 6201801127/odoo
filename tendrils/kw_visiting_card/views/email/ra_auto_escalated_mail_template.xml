<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_ra_auto_escalted_visiting_card_email_template" model="mail.template">
            <field name="name">RA Auto Escalated Business card e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Business Card Application | ${object.state} by Tendrils</field>
            <field name="email_to">${object.get_ra_email() or ''}</field>
            <!-- <field name="email_cc">${object.get_ra_email() or ''}</field> -->
            <field name="model_id" ref="kw_visiting_card.model_kw_visiting_card_apply"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                    <![CDATA[

<table border="0">
    <tr>
        <td align="center" style="min-width: 590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tbody>
                    <tr>
                        <td align="top" style="font-size: 14px;">
                            <div>
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                    <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                    <span>
                                    % if object.create_employee_id and object.create_employee_id.parent_id:
                                        ${object.create_employee_id.parent_id.name}
                                    % endif</span>,
                                </h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    <b>${object.get_employee_name()}'s</b> business card has been automatically approved
                                    as approval time exceeded 24 hours.
                                </p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
                    ]]>

            </field>
        </record>
    </data>
</odoo>