<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_send_for_print_visiting_card_email_template" model="mail.template">
            <field name="name">Business Card: Vendor e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">New Business Card for printing | CSM Technologies | ${object.get_employee_name()}</field>
            <field name="email_to">${object.vendor_name.email}</field>
            <field name="email_cc">${ctx['manager_email']}</field>
            <field name="model_id" ref="kw_visiting_card.model_kw_visiting_card_apply"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                    <![CDATA[

    <table border="0">
    <tr>
        <td align="center" style="min-width: 590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tbody>
                    <tr>
                        <td align="top" style="font-size: 14px;">

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Dear ${object.vendor_name.name},
                                        </span>
                                    </h5>
                                
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                        Please print ${object.no_of_cards_required} No of Business card as per the details mentioned below.
                                    </p>
                                    <br/>
                                    <table>
                                        % for data in object.card_details.split('\n'):
                                            <tr><td>${data}</td></tr>
                                        %endfor
                                    </table>
                                    <br/>
                                    <br/>
                                    <p>For any other query , please feel free to contact 
                                        % if ctx.get('employee'):
                                                 ${ctx['employee'].name} on Cell
                                                 ${ctx['employee'].mobile_phone} on Mail
                                                 ${ctx['employee'].work_email}
                                         %endif
                                     </p> 
                                </div>
                               <br/>

                        </td>
                    </tr>                  
                </tbody>
            </table>
        </td>
    </tr>
     </table>
                        
                    ]]>

            </field>
        </record>
