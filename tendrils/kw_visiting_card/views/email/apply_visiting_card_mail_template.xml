<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_apply_visiting_card_email_template" model="mail.template">
            <field name="name">Business Card: Apply e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">New Business Card Application</field>
            <field name="email_to">${ctx['manager_email']}</field>
            <field name="email_cc">${object.get_ra_email() or ''}</field>
            <field name="model_id" ref="kw_visiting_card.model_kw_visiting_card_apply"/>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
            <field name="body_html">
                            <![CDATA[
                            <table border="0">
                                <tr>
                                    <td>
                                        <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                                <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                                    Dear ${ctx['manager_name']},
                                                </span>
                                            </h5>
                                        
                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                                New Business card has been Applied by
                                                <span style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    <b>${object.get_employee_name()}</b>
                                                    % if object.visiting_card_for == 'others':
                                                        for <b>${object.emp_name.name}</b>.
                                                    % endif
                                                </span>
                                            </p>
                                        </div>

                                    </td>
                                </tr>
                            </table>
                            ]]>
            </field>

        </record>
    </data>
</odoo>