<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_visiting_card_apply_report_tree">
            <field name="name">Business Card Report</field>
            <field name="model">kw_vc_apply_report</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" import='false'>
                    <field name="dept_name"/>
                    <field name="emp_name"/>
                    <field name="applied_date"/>
                    <field name="no_of_cards_required"/>
                    <field name="date_when_required"/>
                    <field name="status"/>
                    <field name="vendername"/>
                    <field name="sentforprinting"/>
                    <field name="deliveredtouser"/>
                    <button class="fa fa-eye btn-info" string=' View Details' name="view_vc_details" type="object"/>
                </tree>
            </field>
        </record>

        <record id="kw_visiting_card_apply_report_view_pivot" model="ir.ui.view">
            <field name="name">Business Card Report Pivot</field>
            <field name="model">kw_vc_apply_report</field>
            <field name="arch" type="xml">
                <pivot string="Business Card">
                    <field name="no_of_cards_required" type="measure" string='Total Cards'/>
                    <field name="emp_name" type="row"/>
                    <field name="status" type="col"/>
                    <field name="dept_name" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="kw_visiting_card_apply_report_graph" model="ir.ui.view">
            <field name="name">Business Card Report Graph</field>
            <field name="model">kw_vc_apply_report</field>
            <field name="arch" type="xml">
                <graph string="Business Card">
                    <field name="dept_name"/>
                    <field name="applied_date"/>
                    <field name="no_of_cards_required"/>
                    <field name="status"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_report_kw_visiting_card_apply">
            <field name="name">Business Card Report</field>

            <field name="res_model">kw_vc_apply_report</field>
            <field name="view_mode">tree,pivot,graph</field>
            <field name="view_id" ref="kw_visiting_card_apply_report_tree"/>
        </record>

        <menuitem id="kw_visiting_card_apply_report_menu"
                  action="action_report_kw_visiting_card_apply"
                  name="Report"
                  parent="kw_visiting_card_parent_menu"
                  groups="kw_visiting_card.group_kw_visiting_card_manager,group_kw_visiting_card_report_manager"
                  sequence="5"/>


    </data>
</odoo>