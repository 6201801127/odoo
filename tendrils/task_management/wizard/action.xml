<odoo>
    <data>
        <!-- =========================WIZARD VIEW===================================== -->
        <record id="tasks_management_wizard_view" model="ir.ui.view">
            <field name="name">Take action</field>
            <field name="model">report_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="start_time" invisible="1"/>
                                <field name="actual_hour" required="1" invisible="1"/>
                                <field name="comment" required="1"/>
                                <!-- <field name="project_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"
                                       attrs="{'invisible': [('project_id', '=', False)]}"/>
                                <field name="prject_category_id"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}"
                                       attrs="{'invisible': [('project_id', '=', False)]}"/>
                                <field name="parent_task_id"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}"
                                       domain="[('id','=',0)]" attrs="{'invisible': [('project_id', '=', False)]}"/>
                                <field name="task_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"
                                       domain="[('id','=',0)]" attrs="{'invisible': [('project_id', '=', False)]}"/>
                                <field name="time_spent" widget="float_time"
                                       attrs="{'invisible': [('project_id', '=', False)]}"/>
                                <field name="date_of" attrs="{'invisible': [('project_id', '=', False)]}"/> -->

                            </group>
                        </group>
                        <footer>
                            <center>
                                <button name="btn_confirm" type="object" string="Confirm" class="btn-success"
                                        context="{'current_btn':'stop_task'}" confirm = "Are you sure, you want to stop the task?"/>
                                <button string="Cancel" class="btn-danger ml-2" special="cancel"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tasks_management_wizard_ack_view" model="ir.ui.view">
            <field name="name">Acknowledge Task</field>
            <field name="model">report_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="stage_of" widget="radio" options="{'horizontal': true}"/>
                                <field name="comment" required="1"/>
                                <field name="reopen_bool" attrs="{'invisible':[('stage_of','=','Complete')]}"/>
                            </group>
                        </group>
                        <footer>
                            <center>
                                <button name="btn_confirm" type="object" string="Confirm" class="btn-success"
                                        context="{'current_btn':'acknowledge'}"/>
                                <button string="Cancel" class="btn-danger ml-2" special="cancel"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tasks_management_wizard_pause_view" model="ir.ui.view">
            <field name="name">Pause Task</field>
            <field name="model">report_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="actual_hour" readonly="1" invisible="1"/>
                                <field name="comment" required="1"/>
                            </group>
                        </group>
                        <footer>

                            <button name="btn_confirm" type="object" string="Confirm" class="btn-success"
                                    context="{'current_btn':'pause'}"/>
                            <button string="Cancel" class="btn-danger ml-2" special="cancel"/>

                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tasks_management_wizard_resume_view" model="ir.ui.view">
            <field name="name">Resume Task</field>
            <field name="model">report_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="pause_time" readonly="1" invisible="1"/>
                                <field name="actual_hour" readonly="1" invisible="1"/>
                                <field name="comment" required="1"/>
                            </group>
                        </group>
                        <footer>

                            <button name="btn_confirm" type="object" string="Confirm" class="btn-success"
                                    context="{'current_btn':'resume'}"/>
                            <button string="Cancel" class="btn-danger ml-2" special="cancel"/>

                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>