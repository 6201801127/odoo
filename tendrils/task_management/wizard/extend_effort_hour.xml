<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="extende_effort_hour_wizard_view" model="ir.ui.view">
            <field name="name">Extend Effort Hour</field>
            <field name="model">extend_effort_hour</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="effort_hour" readonly='1' widget="float_time"/>
                                <field name="extend_effort_hour" widget="float_time"/>
                                <field name="comment"/>
                            </group>
                        </group>
                        <footer>
                            <center>
                                <button name="extend_hour_btn" type="object" string="Confirm" class="btn-success"/>
                                <button string="Cancel" class="btn-danger" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
