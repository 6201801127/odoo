<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="task_management_closed_task_email_template" model="mail.template">
            <field name="name">Report Task</field>
            <field name="subject">Ticket | ${object.assign_task_id.reference_no_txt} | Task Updated</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="model_report_wizard"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.assign_task_id.task_raised_by.name},
                                    </h5>

                                    <p>
                                        Ticket ${object.assign_task_id.reference_no_txt} has been updated by ${ctx['closed_by']}.
                                    </p>
                                </div>
    
                            </td>
                        </tr>
                    </thead>
                </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>