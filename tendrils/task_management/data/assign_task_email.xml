<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="task_management_assigned_task_email_template" model="mail.template">
            <field name="name">Assign Task</field>
            <field name="subject">Ticket | ${ctx['ticket_no']} | Task Assigned</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="model_kw_task_management"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['assign_task_to']},
                                    </h5>

                                    <p>
                                        Ticket ${ctx['ticket_no']} has been assigned to you by ${ctx['task_assigned_by_name']}.
                                    </p>
                                </div>
    
                            </td>
                        </tr>
                    </thead>
                </table>
                <a  target="_current" style="padding: .5rem 1rem;border-radius: .2em;border: none;margin-left: 22;color: #fff;background-color: #30a20f;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: NONE;""
                    href="/view_details/">
                    View Details
                </a>
                    ]]>
            </field>
        </record>
    </data>
</odoo>