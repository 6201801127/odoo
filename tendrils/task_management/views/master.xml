<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_task_type_master_list">
            <field name="name">kw_task_type_master list</field>
            <field name="model">kw_task_type_master</field>
            <field name="arch" type="xml">
                <tree import="0" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="kw_task_type_master_list_view">
            <field name="name">kw_task_type_master list View</field>
            <field name="model">kw_task_type_master</field>
            <field name="arch" type="xml">
                <tree import="0" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="kw_task_type_master_action">
            <field name="name">Task Type Master</field>
            <field name="res_model">kw_task_type_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_task_type_master_list')})]"/>
        </record>


        <record model="ir.ui.view" id="task_management_user_access_list">
            <field name="name">task_management_user_access list</field>
            <field name="model">task_management_user_access</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom' delete='1'>
                    <field name="emp_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>

                </tree>
            </field>
        </record>

          <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="task_management_user_access_action">
            <field name="name">Configuration User</field>
            <field name="res_model">task_management_user_access</field>
            <field name="view_mode">tree</field>
        </record>

        
        
        <menuitem name="Task Type Master"
        id="kw_task_type_master_menu"
        parent='task_management_master_config_menu'
        action='kw_task_type_master_action'
        groups='task_management.group_task_management_manager'
        sequence="1"/>
        
        <menuitem name="Configuration User" id="task_management_configuration_access_menu" parent='task_management_master_config_menu'
        action='task_management_user_access_action'
        groups='task_management.group_task_management_manager'
        sequence="2"/>
    </data>
</odoo>
