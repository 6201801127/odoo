<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_task_management">
            <field name="name">Task Management</field>
            <field name="description">User access level for Task Management</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_task_management_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_task_management"/>
        </record>
     
        <record id="group_task_management_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_task_management"/>
            <field name="implied_ids" eval="[(4,ref('group_task_management_user'))]"/>
        </record>
    </data>
</odoo>
