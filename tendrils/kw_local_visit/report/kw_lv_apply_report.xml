<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_lv_apply_report_view_tree" model="ir.ui.view">
            <field name="name">Local Visit Apply Report Tree</field>
            <field name="model">kw_lv_apply_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <field name="emp_name"/>
                    <field name="category_name"/>
                    <field name="vehicle_type"/>
                    <field name="visit_date"/>
                    <field name="expected_in_time"/>
                    <field name="out_time"/>
                    <field name="in_time"/>
                    <field name="total_km"/>
                    <field name="price"/>
                    <field name="lv_status"/>
                    <button class="fa fa-eye btn-info" string=' View Details' name="view_lv_details" type="object"/>
                </tree>
            </field>
        </record>

        <record id="kw_lv_apply_report_view_pivot" model="ir.ui.view">
            <field name="name">Local Visit Apply Report Pivot</field>
            <field name="model">kw_lv_apply_report</field>
            <field name="arch" type="xml">
                <pivot string="Local Visit">
                    <field name="total_km" type="measure" string='Total KM'/>
                    <field name="price" type="measure" string='Price'/>
                    <field name="emp_name" type="row"/>
                    <field name="category_name" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="kw_lv_apply_report_view_graph" model="ir.ui.view">
            <field name="name">Local Visit Apply Report Graph</field>
            <field name="model">kw_lv_apply_report</field>
            <field name="arch" type="xml">
                <graph string="Local Visit">
                    <field name="emp_name"/>
                    <field name="category_name"/>
                    <field name="total_km"/>
                    <field name="price" />
                </graph>
            </field>
        </record>

        <record id="kw_lv_apply_report_view_search" model="ir.ui.view">
            <field name="name">Local Visit Apply Report Search</field>
            <field name="model">kw_lv_apply_report</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Current Financial Year" name="current_financial_year" domain="[('current_financial_year','=','current')]"/>
                    <separator/>
                    <filter string="Visit Date" name="visit_date" date="visit_date"/>
                    <separator/>
                    <field name="emp_name"/>
                    <group expand="0" string="Group By">
                        <filter string="Category Name" name="category_name" context="{'group_by':'category_name'}"/>
                        <filter string="Branch" name="branch_name" context="{'group_by':'branch_location'}"/>
                        <filter string="Country" name="country_name" context="{'group_by':'branch_country'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_lv_apply_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Local Visit Report</field>
            <field name="res_model">kw_lv_apply_report</field>
            <field name="view_mode">tree,pivot,graph</field>
            <field name="context">{'search_default_current_financial_year':1,'pivot_measures': ['total_km']}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No report(s) found...
                </p>
            </field>
        </record>
    </data>
</odoo>
