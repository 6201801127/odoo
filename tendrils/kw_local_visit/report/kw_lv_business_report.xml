<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_lv_business_report_view_tree" model="ir.ui.view">
            <field name="name">Local Visit Business Report Tree</field>
            <field name="model">kw_lv_business_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <field name="employee_name"/>
                    <field name="visit_date"/>
                    <field name="activity_name"/>
                    <field name="sub_category_name"/>
                    <field name="order_type"/>
                    <field name="work_opportunity"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <record id="kw_lv_business_report_view_pivot" model="ir.ui.view">
            <field name="name">Local Visit Business Report Pivot</field>
            <field name="model">kw_lv_business_report</field>
            <field name="arch" type="xml">
                <pivot string="Local Visit">
                    <field name="employee_name" type="row"/>
                    <field name="order_type" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="kw_lv_business_report_view_graph" model="ir.ui.view">
            <field name="name">Local Visit Business Report Graph</field>
            <field name="model">kw_lv_business_report</field>
            <field name="arch" type="xml">
                <graph string="Local Visit">
                    <field name="employee_name"/>
                    <field name="order_type" />
                </graph>
            </field>
        </record>

        <record id="kw_lv_business_report_view_search" model="ir.ui.view">
            <field name="name">Local Visit Business Report Search</field>
            <field name="model">kw_lv_business_report</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Current Financial Year" name="current_financial_year" domain="[('current_financial_year','=','current')]"/>
                    <separator/>
                    <filter string="Visit Date" name="visit_date" date="visit_date"/>
                    <separator/>
                    <field name="employee_name"/>
                    <group expand="0" string="Group By">
                        <filter string="Order Type" name="order_type" context="{'group_by':'order_type'}"/>
                        <filter string="Branch" name="branch_name" context="{'group_by':'branch_location'}"/>
                        <filter string="Country" name="country_name" context="{'group_by':'branch_country'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="kw_lv_business_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Local Visit Business Report</field>
            <field name="res_model">kw_lv_business_report</field>
            <field name="view_mode">tree,pivot,graph</field>
            <field name="context">{'search_default_current_financial_year':1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No report(s) found...
                </p>
            </field>
        </record>
    </data>
</odoo>
