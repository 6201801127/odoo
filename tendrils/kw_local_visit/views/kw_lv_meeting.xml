<odoo>
    <data>
        <record model="ir.ui.view" id="kw_lv_meeting_list">
            <field name="name">Local Visit Meeting</field>
            <field name="model">kw_lv_meeting</field>
            <field name="arch" type="xml">
                <tree string="Local Visit Meeting List">
                    <field name="contact_person"/>
                    <field name="from_time"/>
                    <field name="to_time"/>
                    <field name="visit_place"/>
                    <field name="subject"/>
                    <field name="details"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_lv_meeting_form">
            <field name="name">Local Visit Meeting</field>
            <field name="model">kw_lv_meeting</field>
            <field name="arch" type="xml">
                <form string="Local Visit Meeting Form">
                    <sheet>
                        <group>
                            <field name="contact_person"/>
                            <field name="business_id" options="{'no_create_edit':True}"/>
                            <field name="from_time"/>
                            <field name="to_time"/>
                            <field name="visit_place"/>
                            <field name="subject"/>
                            <field name="details"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_lv_meeting_form2">
            <field name="name">Local Visit Meeting</field>
            <field name="model">kw_lv_meeting</field>
            <field name="arch" type="xml">
                <form string="Local Visit Meeting Form" create='false'>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <group>
                        <field name="organization" options="{'no_quick_create':True,'no_open': True,'no_edit':True}" domain="[('partner_share', '=', True),('is_company', '=', True)]" context="{'form_view_ref': 'kw_local_visit.kw_lv_inherited_res_partner_business_form','default_customer': True,'default_supplier': False, 'default_is_company': True}"/>
                        <field name="contact_person" options="{'no_quick_create':True,'no_open': True,'no_edit':True}" domain="[('partner_share', '=', True),('is_company', '=', False)]" context="{'form_view_ref': 'kw_local_visit.kw_lv_inherited_res_partner_business_form','default_customer': True,'default_supplier': False, 'default_is_company': False,'related_company':organization,'partner_name':1}" attrs="{'invisible':[('organization', '=', False)]}"/>
                        <field name="from_time"/>
                        <field name="to_time"/>
                        <field name="visit_place"/>
                        <field name="subject"/>
                        <field name="details"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_lv_meeting_action_window">
            <field name="name">Local Visit Meeting</field>
            <field name="res_model">kw_lv_meeting</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_kw_lv_meeting_act_window_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_lv_meeting_list"/>
            <field name="act_window_id" ref="kw_lv_meeting_action_window"/>
        </record>

        <record id="action_kw_lv_meeting_act_window_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="kw_lv_meeting_form"/>
            <field name="act_window_id" ref="kw_lv_meeting_action_window"/>
        </record>
