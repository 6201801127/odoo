<odoo>
    <data>
        <!-- Vehicle master list view -->
        <record model="ir.ui.view" id="kw_lv_vehicle_master_list">
            <field name="name">Vehicle</field>
            <field name="model">kw_lv_vehicle_master</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Form">
                    <field name="location"/>
                    <field name="vehicle_category"/>
                    <field name="vehicle_name"/>
                    <field name="vehicle_no"/>
                    <field name="driver_name"/>
                    <field name="driver_mobile"/>
                    <field name="valid_from"/>
                    <field name="total_valid_km"/>
                    <field name="monthly_valid_km"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

        <!-- Vehicle master form view -->
        <record model="ir.ui.view" id="kw_lv_vehicle_master_form">
            <field name="name">Vehicle</field>
            <field name="model">kw_lv_vehicle_master</field>
            <field name="arch" type="xml">
                <form string="Vehicle Form">
                    <sheet>
                        <group>
                            <field name="location" options="{'no_create_edit':True}"/>
                            <field name="vehicle_category" options="{'no_create_edit':True}"/>
                            <field name="vehicle_name"/>
                            <field name="vehicle_no"/>
                            <field name="driver_name"/>
                            <field name="driver_mobile"/>
                            <field name="valid_from"/>
                            <field name="total_valid_km"/>
                            <field name="monthly_valid_km"/>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vehicle master actions window -->
        <record model="ir.actions.act_window" id="kw_lv_vehicle_master_action_window">
            <field name="name">Vehicle</field>
            <field name="res_model">kw_lv_vehicle_master</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>