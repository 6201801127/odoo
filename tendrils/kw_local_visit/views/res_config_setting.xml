<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="kw_lv_res_config_setting_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.kw.lv</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Local Visit" string="local Visit" data-key="kw_local_visit">
                    <h2>Local Visit Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row">
                                        <label string="Local Visit Auto Approval(In Days)" for="lv_auto_approval_days" class="col-lg-5"/>
                                        <field name="lv_auto_approval_days"/>
                                    </div>
                                    <div class="text-muted">
                                        Set Days for Local Visit Auto Approval.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>