<odoo>
    <data>
        <!-- Vehicle Category master list view -->
        <record model="ir.ui.view" id="kw_lv_vehicle_category_master_list">
            <field name="name">Vehicle Category</field>
            <field name="model">kw_lv_vehicle_category_master</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Category Form">
                    <field name="location"/>
                    <field name="vehicle_category_name"/>
                    <field name="auto_calculation"/>
                    <field name="rate_per_km"/>
                    <field name="currency"/>
                    <field name="settlement_required"/>
                    <field name="expiry_date"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

        <!-- Vehicle Category master form view -->
        <record model="ir.ui.view" id="kw_lv_vehicle_category_master_form">
            <field name="name">Vehicle Category</field>
            <field name="model">kw_lv_vehicle_category_master</field>
            <field name="arch" type="xml">
                <form string="Vehicle Category Form">
                    <sheet>
                        <group>
                            <field name="location" options="{'no_create_edit':True}"/>
                            <field name="vehicle_category_name"/>
                            <field name="auto_calculation"/>
                            <field name="rate_per_km" attrs="{'invisible':['|','&amp;',('auto_calculation','=',False),('rate_per_km','=',False),('auto_calculation','=', False)]}"/>
                            <field name="currency" options="{'no_create_edit':True}"/>
                            <field name="settlement_required" />
                            <field name="expiry_date" attrs="{'invisible':['|','&amp;',('expiry_date','=',False),('settlement_required','=',False),('settlement_required','=', False)]}"/>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vehicle Category master actions window -->
        <record model="ir.actions.act_window" id="kw_lv_vehicle_category_master_action_window">
            <field name="name">Vehicle Category</field>
            <field name="res_model">kw_lv_vehicle_category_master</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>