<odoo>
	<data>
		<record id="kw_lv_category_master_action_window" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Local visit Category</field>
			<field name="res_model">kw_lv_category_master</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="target">current</field>
			<field name="domain">[]</field>
		</record>

		<record id="kw_lv_category_master_tree" model="ir.ui.view">
			<field name="name">kw_lv_category_master.tree</field>
			<field name="model">kw_lv_category_master</field>
			<field name="arch" type="xml">
				<tree string="Local visit Category">
					<field name="sequence" string='Sl#'/>
					<field name="category_name"/>
					<field name="office_details" />
					<field name="visit_details" />
					<field name="apply_future_date"/>
					<field name="apply_back_date" />
					<field name="is_personal"/>
					<field name="remark"/>
				</tree>
			</field>
		</record>

		<record id="kw_lv_category_master_form" model="ir.ui.view">
			<field name="name">kw_lv_category_master.form</field>
			<field name="model">kw_lv_category_master</field>
			<field name="arch" type="xml">
				<form string="Local visit Category">
					<sheet>
						<group>
							<group>
								<field name="category_name"/>
								<field name="office_details" widget="radio" options="{'horizontal': true}"/>
							</group>
							<group>
								<field name="visit_details" widget="radio" options="{'horizontal': true}" attrs="{'invisible':['|','&amp;',('office_details','=',False),('visit_details','=',False),('office_details','=','no')]}"/>
								<field name="apply_future_date" widget="radio" options="{'horizontal': true}"/>
							</group>
							<group>
								<field name="apply_back_date" widget="radio" options="{'horizontal': true}"/>
								<field name="is_personal" widget="radio" options="{'horizontal': true}"/>
							</group>
						</group>
						<group>
							<field name="remark"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>