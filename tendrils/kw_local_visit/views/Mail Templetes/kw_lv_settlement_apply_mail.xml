<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <record id="kw_lv_settlement_apply_email_template" model="mail.template">
            <field name="name">Settlement Apply Mail Template | Local Visit</field>
            <field name="email_from">${object.emp_name.work_email or ''}</field>
            <field name="subject">Local Visit | ${object.emp_name.name} (${object.emp_name.emp_code}) | Settlement Applied</field>
            <field name="email_to">${ctx['email_to']}</field>
            <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
            <field name="model_id" ref="kw_local_visit.model_kw_lv_settlement"/>
            <field name="auto_delete" eval="False" />
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['dear_user']},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Local visit settlement has been applied by ${object.emp_name.name}.
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            <u>Local visit settlement details :</u>
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Total K.M.
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.total_km}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Total Price
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.price}
                                        </td>
                                    </tr>
                                
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to view details & take action.<br/>
                                        ------------------------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>

        </record>
    </data>

</odoo>
