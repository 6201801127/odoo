<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_lv_ofc_out_group_email_template" model="mail.template">
            <field name="name">Group Employee Mail Template | Local Visit</field>
            <field name="email_from">${object.applied_by.work_email or ''}</field>
            <field name="subject">Local Visit Group Emp Mail | ${object.emp_name.name}</field>
            <field name="email_to"></field>
            <field name="model_id" ref="kw_local_visit.model_kw_lv_apply"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        --group_emp_name--,
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        ${object.emp_name.name} is going along with ${object.applied_by.name} in a Local visit.
                                    </p>
                                </div>
                               
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            <u>Visit Details :</u>
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Category
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.visit_category.category_name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Date
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.visit_date, format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    % if object.visit_category.visit_details == 'no':
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                    Location
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${object.location}
                                                </td>
                                            </tr>

                                        % if object.visit_category.office_details == 'yes':
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                    Customer/Organization Name
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${object.organization_name.name}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                    Contact Person
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${object.contact_person.name}
                                                </td>
                                            </tr>
                                        % endif
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                                    Purpose
                                                </td>
                                                <td style="color:#167b9e;height: 34px;">
                                                    ${object.purpose}
                                                </td>
                                            </tr>
                                    % endif
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Expected In Time
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${dict(object.fields_get(allfields=['expected_in_time'])['expected_in_time']['selection'])[object.expected_in_time]}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Office Out Time
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${dict(object.fields_get(allfields=['out_time'])['out_time']['selection'])[object.out_time]}
                                        </td>
                                    </tr>
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ------------------------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>