<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="monthly_auto_approval_mail_template" model="mail.template">
            <field name="name">Monthly Auto Approval Notification</field>
            <field name="email_from">${object.emp_name.user_id.company_id and object.emp_name.user_id.company_id.email or ''}</field>
            <field name="subject">Local Visit | This Month Auto Approved Records</field>
            <field name="email_to">${ctx['email_to_set']}</field>
            <field name="email_cc">manasi.das@csm.tech</field>
            <field name="model_id" ref="kw_local_visit.model_kw_lv_apply"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['mail_to_name']}
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is for your kind information that below local visit applications were auto approved as approval time exceeded ${ctx['auto_days']} days.
                                    </p>
                                </div>
                               
                                <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem; ">
                                    <tr>
                                        <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Date </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Name </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Department </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Division </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> RA Name </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Vehicle </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Total KMs </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Total Price(INR) </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Purpose </th>
                                    </tr>
                                    % for row in ctx['employee_list']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:10%;" >
                                                ${row.split(':')[0]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[1]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[2]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[3]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[4]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[5]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[6]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[7]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[8]}
                                            </td>
                                        </tr>
                                    % endfor
                                </table>

                                <br/>
                                <br/>
                                <br/>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ------------------------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>