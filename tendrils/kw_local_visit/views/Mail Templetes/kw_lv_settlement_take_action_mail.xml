<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
    <record id="kw_lv_settlement_take_action_email_template" model="mail.template">
        <field name="name">Settlement Action Mail Template | Local Visit</field>
        <field name="email_from">${object.taken_by.work_email or ''}</field>
        <field name="subject">Local Visit | ${object.emp_name.name}(${object.emp_name.emp_code})| Settlement ${object.state}</field>
        <field name="email_to">${object.emp_name.work_email}</field>
        <!-- <field name="email_cc">${object.emp_name.coach_id.work_email} if ${object.emp_name.coach_id} else ${object.emp_name.parent_id.work_email}</field> -->
        <!-- <field name="email_cc">${(object.emp_name.coach_id.work_email if object.emp_name and object.emp_name.coach_id else object.emp_name.parent_id.work_email |safe)}</field> -->
        <field name="model_id" ref="kw_local_visit.model_kw_lv_settlement"/>
        <field name="auto_delete" eval="False" />
        <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.emp_name.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Your local visit settlement has been ${object.state} by ${object.taken_by.name}.
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            <u>Local visit settlement details :</u>
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Applied On
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.applied_date, format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Total K.M.
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.total_km}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Total Price
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.price}
                                        </td>
                                    </tr>
                                
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to view details.<br/>
                                        ------------------------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
    </record>
    </data>

</odoo>
