<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_lv_business_form" model="ir.ui.view">
            <field name="name">Local Visit Business</field>
            <field name="model">kw_lv_business</field>
            <field name="arch" type="xml">
                <form string="Local Visit Business">
                    <field name="status" invisible='1'/>
                    <sheet>
                        <group>
                            <field name="activity_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="sub_category" domain='[("category_type","=",context.get("category_id",False))]' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="visit_for" widget="radio" options="{'horizontal': true}"/>
                            <field name="crm_id" options="{'no_open': True,'no_create':True,'no_edit':True}" context="{'tree_view_ref': 'kw_local_visit.crm_lead_local_visit_tree_view'}"/>
                            <field name="location" attrs="{'invisible': [('status','=',False)],'required': [('status','in',['office_out','office_in'])]}"/>
                            <field name="purpose" attrs="{'invisible': [('status','=',False)],'required': [('status','in',['office_out','office_in'])]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_lv_business_form2" model="ir.ui.view">
            <field name="name">Local Visit Business</field>
            <field name="model">kw_lv_business</field>
            <field name="arch" type="xml">
                <form string="Local Visit Business">
                    <sheet>
                        <group string='Business Details'>
                            <field name="activity_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="sub_category" domain='[("category_type","=",context.get("category_id",False))]' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="visit_for" widget="radio" options="{'horizontal': true}"/>
                            <field name="crm_id" options="{'no_open': True,'no_create':True,'no_edit':True}" context="{'tree_view_ref': 'kw_local_visit.crm_lead_local_visit_tree_view'}"/>
                            <field name="location" required='1'/>
                            <field name="purpose" required='1'/>
                        </group>
                        <group string='Meeting Details'>
                            <field name="meeting_id" nolabel='1' context="{'form_view_ref': 'kw_local_visit.kw_lv_meeting_form2','default_visit_place': location, 'default_details': purpose}">
                                <tree>
                                    <field name="contact_person"/>
                                    <field name="visit_place"/>
                                    <field name="subject"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_local_visit_tree_view" model="ir.ui.view">
            <field name="name">employee local visit form</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="crm_lead_local_visit_tree_view" model="ir.ui.view">
            <field name="name">crm local visit form</field>
            <field name="model">crm.lead</field>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
