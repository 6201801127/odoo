<odoo>
    <data>
        <record model="ir.ui.view" id="kw_lv_settlement_payment_list">
            <field name="name">Local Visit Settlement Payment</field>
            <field name="model">kw_lv_settlement</field>
            <field name="arch" type="xml">
                <tree string="Local Visit Settlement" import='false' create='false' edit='false' delete='false' duplicate='false'>
                    <field name="payment_state" invisible='1'/>
                    <field name="emp_name" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}" string='Employee Name'/>
                    <field name="applied_date" readonly='1' string='Settlement Applied On'/>
                    <field name="lv_id" readonly='1' string='No. of Local Visits'/>
                    <field name="total_km" readonly='1'/>
                    <field name="price" readonly='1'/>
                    <field name="state" invisible='1'/>
                    <button name='action_payment' string='Payment' class='btn-info float-right' type='object' attrs="{'invisible': [('payment_state','in',['payment'])]}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_lv_settlement_payment_form">
            <field name="name">Local Visit Settlement Payment</field>
            <field name="model">kw_lv_settlement</field>
            <field name="arch" type="xml">
                <form string="Local Visit Settlement">
                <field name="stage_id" invisible="1"/>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="payment_date" required='1'/>
                            </group>
                            <center>
                                <button name="confirm_payment" type="object" class="btn-success mr-2">Update</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_lv_settlement_payment_search" model="ir.ui.view">
            <field name="name">Local Visit Settlement Payment</field>
            <field name="model">kw_lv_settlement</field>
            <field name="arch" type="xml">
                <search>
                <!-- SEARCH -->
                    <field name="emp_name"/>
                    <!-- GROUP BY -->
                    <group expand="0" string="Group By">
                        <filter string="Settlement State" name="settlement_state" context="{'group_by':'state'}"/>
                        <filter string="Payment State" name="payment_state" context="{'group_by':'payment_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_lv_settlement_payment_action_window">
            <field name="name">Local Visit Settlement Payment</field>
            <field name="res_model">kw_lv_settlement</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('payment_state','in',['applied'])]</field>
            <field name="search_view_id" ref="kw_lv_settlement_payment_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No applied local visit settlement payment(s) here...
                </p>
            </field>
        </record>

        <record id="action_kw_lv_settlement_payment_act_window_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_lv_settlement_payment_list"/>
            <field name="act_window_id" ref="kw_lv_settlement_payment_action_window"/>
        </record>
    </data>
</odoo>