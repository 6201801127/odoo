<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_lv_settlement_approve_remark_form_view" model="ir.ui.view">
            <field name="model">kw_lv_settlement</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="group_access" invisible="1"/>
                                <field name="remark"/>
                            </p>
                            <button type="object" name="lv_settlement_action_approve" class="btn-success mr-2">Submit</button>
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <!-- Reject Remarks -->
        <record id="kw_lv_settlement_reject_remark_form_view" model="ir.ui.view">
            <field name="model">kw_lv_settlement</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="group_access" invisible="1"/>
                                <field name="remark"/>
                            </p>
                            <button type="object" name="lv_settlement_action_reject" class="btn-success mr-2">Submit</button>
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_lv_many2many_records_settlement_reject_remark_form_view" model="ir.ui.view">
            <field name="model">kw_lv_apply</field>
            <field name="arch" type="xml">
                <form>
                <field name="status" invisible='1'/>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="text-center col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                                <field name="settlement_reject_remark"/>
                            </p>
                            <button type="object" name="update_reject_from_settlement" class="btn-success mr-2">Update</button>
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>