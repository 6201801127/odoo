<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_lv_approve_remark_form_view" model="ir.ui.view">
            <field name="model">kw_lv_apply</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="ra_access" invisible="1"/>
                            <field name="status" invisible="1"/>
                            <field name="action_remark"/>
                        </p>
                        <button type="object" name="lv_action_approve" class="btn-success mr-2">Submit</button>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </div>
                </div>
                </form>
            </field>
        </record>
        <!-- Reject Remarks -->
        <record id="kw_lv_reject_remark_form_view" model="ir.ui.view">
            <field name="model">kw_lv_apply</field>
            <field name="arch" type="xml">
                <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <p class="h6 font-weight-light text-left text-justify">
                            <field name="ra_access" invisible="1"/>
                            <field name="status" invisible="1"/>
                            <field name="action_remark"/>
                        </p>
                        <button type="object" name="lv_action_reject" class="btn-success mr-2">Submit</button>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </div>
                </div>
                </form>
            </field>
        </record>
    </data>
</odoo>