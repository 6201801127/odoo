<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_lv_settlement_payment_wizard_view_form" model="ir.ui.view">
            <field name="name">Local Visit Settlement Payment</field>
            <field name="model">kw_lv_settlement_payment_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="payment_date" required='1'/>
                            </group>
                            <center>
                                <button name="update_payment" type="object" class="btn-success mr-2">Update</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kw_lv_settlement_payment_wizard_actions" groups='kw_local_visit.group_kw_local_visit_settlement' name="Payment" src_model="kw_lv_settlement" res_model="kw_lv_settlement_payment_wizard" view_type="form" view_mode="form" key2="client_action_multi" target="new"/>
    </data>
</odoo>