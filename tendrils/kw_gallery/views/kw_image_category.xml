<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- actions views Opening-->
        <record id="kw_image_category_actions_window" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">kw_image_category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a category ...
                </p>
                <p>
                    This is the list of all the categories that you created.
                </p>
            </field>
        </record>
        <!-- actions views Ending-->

        <!-- explicit tree view definition Opening -->
        <record id="kw_image_category_view_tree" model="ir.ui.view">
            <field name="name">Kw category tree</field>
            <field name="model">kw_image_category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="no_of_published_albums"  string='Published Albums' class='text-success font-weight-bold'/>
                    <field name="no_of_unpublished_albums" string='Unpublished Albums' class='text-danger font-weight-bold'/>
                    <field name="no_of_albums" string='Total Albums' class='text-info font-weight-bold'/>
                    <!-- <field name="to_all"/>
                    <field name="to_some_specific_group" string='Groups' attrs="{'invisible': [('to_all', '=',True)]}"/> -->
                    <!-- <button name="publish_image_albums" type="object" string="Click to Publish" attrs="{'invisible':[('public', '=',True)]}" class="oe_highlight"/> -->
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_image_category_form">
            <field name="name">Kw category form</field>
            <field name="model">kw_image_category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string='Category'>
                            <field name="name"/>
                            <field name="description" required='1'/>
                            <field name="no_of_albums" readonly='1'/>
                        </group>
                        <group string='Permission'>
                            <field name="public"/>
                            <field name="to_some_specific_group" options="{'no_open': True,'no_create': True, 'no_edit': True}" widget="many2many_tags" attrs="{'invisible':[('public', '=',True)],'required':[('public', '=',False)]}" string="Select Groups"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->

        <record id="kw_image_category_search_view" model="ir.ui.view">
            <field name="name">Kw category search</field>
            <field name="model">kw_image_category</field>
            <field name="arch" type="xml">
                <search string="Search Developers">
                    <field name="name" string = "Category name"/>
                    <field name="description" string = "Description"/>
                     <group expand="1" string="Group By">
                        <filter string="Category name" name="name" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>


    </data>
</odoo>