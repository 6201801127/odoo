<odoo>
    <!-- Gallery page -->
    <template id="gallery_template" name="Gallery">
        <t t-call="website.layout">

            <div class="container gallery-container mt-4">
                <div class="col-sm-6 col-sm-offset-6 mb-4">
                    <h1>Gallery</h1>
                </div>
                <div class="gallery">
                    <div class="row">
                        <t t-foreach="gallery" t-as="gallery_image">
                            <div class="col-sm-6 col-md-3">
                                <t t-foreach="gallery_image" t-as='image_gallery'>
                                    <t t-set="count" t-value="1" />
                                    <t t-foreach='image_gallery.gallery_id' t-as='images'>
                                        <t t-if='images.image_id.id == image_gallery.id and count == 1'>
                                            <a t-att-href="'/gallery-details-'+str(image_gallery.id)">
                                                <div class="card gallery" t-attf-style="background-image: url('data:image/*;base64,{{images.image}}'); background-size: cover;">
                                                    <t t-set="count" t-value="count+1" />
                                                    <div class="content-details fadeIn-bottom">
                                                        <h3 class="content-title">
                                                            <t t-esc='image_gallery.name' />
                                                        </h3>
                                                    </div>
                                                </div>
                                            </a>
                                        </t>
                                    </t>
                                </t>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="gallery_detail_template" name="Gallery Details">
        <t t-call="website.layout">
            <div class="container gallery-container mt-5">
                <h1>
                    <t t-esc="gallery.name" />
                </h1>
                <button class="btn btn-primary float-right" type="button" onclick='window.history.go(-1);'>
                    <i class="fa fa-arrow-circle-left " />
                    &amp;nbsp;Back to Gallery
                </button>
                <p class="page-description">
                    <t t-esc="gallery.description" />
                </p>
                <div class="tz-gallery">
                    <div class="row o_gallery">
                        <t t-foreach='gallery.gallery_id' t-as='images'>

                            <div class="col-sm-6 col-md-3" t-if="images.upload_status == 'image'" t-att-type="images.upload_status">
                                <div class="thumbnail">
                                    <a class="lightbox-box" t-attf-href="/web/image/#{images.attachment_id}" data-lightbox="gallery-set" t-att-data-title="images.title">
                                        <div class="card gallery" t-attf-style="background-image: url('/web/image/#{images.attachment_id}'); background-size: cover;">
                                            <div class="content-details fadeIn-bottom" t-if="images.title">
                                                <h3>
                                                    <t t-esc='images.title' />
                                                </h3>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3" t-if="images.upload_status == 'video'" t-att-type="images.upload_status" >
                                <div class="thumbnail" >
                                    <a class="lightbox-box-video" t-att-href="images.video" t-att-data-title="images.title">
                                        <div class="card gallery" t-attf-style="background-image: url('/web/image/#{images.attachment_id}'); background-size: cover;">
                                            <div class="content-details fadeIn-bottom" t-if="images.title">
                                                <h3>
                                                    <t t-esc='images.title' />
                                                </h3>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                
                                
                            </div>
                        </t>
                        <div id="youtubelightbox" class="parent" >
                            <div class="centeredchild">
                                <div class="videowrapper">
                                    <div id="playerdiv"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="gallery_assets" inherit_id="kw_gallery.gallery_template">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/kw_gallery/static/src/css/gallery_style.css" />
        </xpath>
    </template>

    <template id="gallery_detail_assets" inherit_id="kw_gallery.gallery_detail_template">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/kw_gallery/static/src/css/lightbox.min.css" />
            <link rel="stylesheet" type="text/css" href="/kw_gallery/static/src/css/gallery_style.css" />

            <script type="text/javascript" src="/kw_gallery/static/src/js/lightbox.min.js" />
            <script type="text/javascript" src="https://www.youtube.com/iframe_api"/>
            <script type="text/javascript" src="/kw_gallery/static/src/js/gallery.js" />
        </xpath>
    </template>
</odoo>