<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit kanban view definition Opening -->
        <record model="ir.ui.view" id="kw_gallery_image_kanban">
            <field name="name">Kw Display Image Kanban</field>
            <field name="model">kw_images</field>
            <field name="arch" type="xml">
                <kanban create='0'>
                    <field name="id"/>
                    <field name="image"/>
                    <templates id="image_gallery_template">
                        <t t-name="kanban-box">
                            <div class="row" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                                <div class="column">
                                    <a type ="open">
                                        <img id='img1' class='img1' t-att-src="kanban_image('kw_images','image',record.id.raw_value)" style="width:100%;height:200px;" alt="Image"/>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- explicit kanban view definition Ending -->
    </data>
</odoo>
