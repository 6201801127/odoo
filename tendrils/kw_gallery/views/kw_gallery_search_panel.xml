<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gallery_kanban_view_search_panel" model="ir.ui.view">
            <field name="name">kw_gallery.kanban.view</field>
            <field name="model">kw_image_albums</field>
            <field name="inherit_id" ref="kw_gallery.kw_image_gallery_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//templates">
                    <searchpanel>
                        <field name="category_name" disable_counters="true" icon="fa-sitemap" domain ="[('status','=','3')]"/>
                    </searchpanel>
                </xpath>
            </field>
        </record>
    </data>
</odoo>