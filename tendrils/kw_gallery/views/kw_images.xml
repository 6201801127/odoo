<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit kanban view definition Opening -->
        <record model="ir.ui.view" id="kw_image_gallery_kanban">
            <field name="name">Kw image Gallery kanban</field>
            <field name="model">kw_images</field>
            <field name="arch" type="xml">
                <kanban create="0">
                    <field name="id" />
                    <field name="title"/>
                    <field name="upload_status"/>
                    <templates>
                        <span t-name="kanban-box">
                            <div style="padding-left:10px; height:200px">
                                <div class="o_project_kanban_main  ">
                                    <div class="o_kanban_card_content" style="display:block">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('kw_images','image',record.id.raw_value)" alt="Image"/>
                                            <field name="title"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </span>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- explicit kanban view definition Ending -->

        <!-- actions views Opening-->
        <record id="kw_images_actions_window" model="ir.actions.act_window">
            <field name="name">CSM Image Gallery</field>
            <field name="res_model">kw_images</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_gallery.kw_image_gallery_kanban"/>
        </record>
        <!-- actions views Opening-->

        <!-- explicit tree view definition Opening -->
        <record id="kw_images_view_tree" model="ir.ui.view">
            <field name="name">kw images tree view</field>
            <field name="model">kw_images</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="image" string='Image' widget="image" options="{'preview_image': 'image', 'size': [50, 50]}"/>
                    <field name="video" string="Video" />
                    <field name="title"/>
                    <field name="image_status"/>
                   
                    <!-- <field name="tag_employees" string='Tag users'/> -->
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_images_form">
            <field name="name"> Kw image Form</field>
            <field name="model">kw_images</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="unpublish_image" attrs="{'invisible':[('image_status', '=','2')]}" string="Unpublish" image_status="1" class="oe_highlight" type="object" />
                        <button name="publish_image" attrs="{'invisible':[('image_status', '=','1')]}" string="Publish" image_status="2" class="oe_highlight" type="object"/> --> -->
                        <field name="image_status" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="upload_status" widget="radio"  options="{'horizontal':true}"/>
                            <field name="image" attrs="{'required':True}" string='Upload image' widget="image"  options="{'preview_image': 'image', 'size': [150, 150]}"/>
                            <label for='image' attrs="{'invisible': [('upload_status','=','video')]}" style='font-weight: normal;' class='text-danger' string='(Only .jpeg, .jpg and .png format are allowed.)'/><br/>
                            <field name="video" attrs="{'invisible':[('upload_status','=','image')],'required':[('upload_status','=','video')]}" widget="url" placeholder="e.g. https://www.odoo.com" text="Link"/>
                            <field name="title"/>
                            <field name="tag_employees" string='Tag users' widget="many2many_tags" options="{'no_open': True,'no_create': True, 'no_edit': True}"/>
                        </group>
                    </sheet>
                </form>     
            </field>
        </record>
        <!-- explicit tree view definition Ending -->
    </data>
</odoo>