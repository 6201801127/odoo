<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit kanban view definition Opening -->
        <record model="ir.ui.view" id="kw_image_gallery_kanban_view">
            <field name="name">Kw image Gallery kanban view</field>
            <field name="model">kw_image_albums</field>
            <field name="arch" type="xml">
                <kanban create='0'>
                    <field name="write_date"/>
                    <field name="id"/>
                    <field name="category_name"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="no_of_pictures"/>
                    <!-- <field name="video" widget="url"/> -->
                    <templates id="image_gallery_template">
                        <t t-name="kanban-box">
                            <div t-attf-class="">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <h4 style="display: inline-block;width:180px;white-space: nowrap;overflow: hidden !important;text-overflow: ellipsis;">
                                            <i class='fa fa-folder text-primary'/>
                                            <b aria-label="Album name" title="Album name"> <t t-esc="record.name.value"/></b>
                                        </h4>
                                        <h6>
                                            <i class="fa fa-list-alt text-primary" role="img"/>
                                            <b aria-label="Category name" title="Category name"> <t t-esc="record.category_name.value"/></b>
                                        </h6>
                                    </div>
                                    <span class='float-right text-primary' aria-label="No of pictures" title="No of pictures">
                                        <i class='fa fa-image'/>
                                        <span class="text-dark font-weight-bold">
                                            <field name="published_pictures"/>
                                        </span>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                       <span aria-label="Last updated on" title="Last updated on">
                                           <i class="fa fa-clock-o text-primary" role="img"/>
                                           <t t-esc="record.write_date.value"/>
                                       </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                       <button class="btn btn-outline-success" aria-label="Click to preview images" title="Click to preview images" type="object" name="get_all_images" >Preview <i class="fa fa-camera text-primary" role="img" ></i> </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- explicit kanban view definition Ending -->

        <!-- actions views Opening-->
        <record id="kw_image_gallery_actions_window" model="ir.actions.act_window">
            <field name="name">Image Gallery</field>
            <field name="res_model">kw_image_albums</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="kw_image_gallery_kanban_view"/>
            <field name="domain">[["status", "in", ['3']]]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Sorry, No albums available.</p>
            </field>
        </record>
        <!-- actions views Ending-->
    </data>
</odoo>
