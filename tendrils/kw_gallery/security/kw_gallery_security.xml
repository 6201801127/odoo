<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate='1'>

        <record model="ir.module.category" id="image_gallery_module_category">
            <field name="name">Image Gallery</field>
            <field name="description">Access level for different users.</field>
            <field name="sequence">4</field>
        </record>
        <record id="group_kw_gallery_viewer" model="res.groups">
            <field name="name">Viewer</field>
            <field name="category_id" ref="kw_gallery.image_gallery_module_category"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_kw_gallery_restricted_publisher" model="res.groups">
            <field name="name">Restricted publisher</field>
            <field name="category_id" ref="kw_gallery.image_gallery_module_category"/>
            <field name="implied_ids" eval="[(4, ref('kw_gallery.group_kw_gallery_viewer'))]"/>
        </record>
        <record id="group_kw_gallery_publisher" model="res.groups">
            <field name="name">Publisher</field>
            <field name="category_id" ref="kw_gallery.image_gallery_module_category"/>
            <field name="implied_ids" eval="[(4, ref('kw_gallery.group_kw_gallery_restricted_publisher')),(4, ref('kw_gallery.group_kw_gallery_viewer'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
                <field name="groups_id" eval="[(4,ref('kw_gallery.group_kw_gallery_viewer'))]"/>
        </record>


        <record id="group_kw_gallery_rule_publisher" model="ir.rule">
            <field name="name">Publisher:No limit to image category</field>
            <field name="model_id" ref="model_kw_image_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('kw_gallery.group_kw_gallery_publisher'))]"/>
        </record>

        <record id="group_kw_album_rule_publisher" model="ir.rule">
            <field name="name">Publisher:No limit to albums</field>
            <field name="model_id" ref="model_kw_image_albums"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('kw_gallery.group_kw_gallery_publisher'))]"/>
        </record>

        <record model="ir.rule" id="album_category_assigned_rule_publisher_read">
            <field name="name">Assigned album Category</field>
            <field name="model_id" ref="model_kw_image_category"/>
            <field name="domain_force">[('to_some_specific_group','in',[g.id for g in user.groups_id])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('kw_gallery.group_kw_gallery_restricted_publisher'))]"/>
        </record>

        <record id="group_kw_album_rule_restricted_publisher" model="ir.rule">
            <field name="name">Restricted Publisher:No limit to albums</field>
            <field name="model_id" ref="model_kw_image_albums"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('kw_gallery.group_kw_gallery_restricted_publisher'))]"/>
        </record>

        <record model="ir.rule" id="kw_gallery_public_rule">
            <field name="name">Public Category</field>
            <field name="model_id" ref="model_kw_image_category"/>
            <field name="domain_force">[('public', '=', True)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('kw_gallery.group_kw_gallery_restricted_publisher'))]"/>
        </record>

        <record model="ir.rule" id="visible_to_all">
            <field name="name">Visbile to all</field>
            <field name="model_id" ref="model_kw_image_albums"/>
            <field name="domain_force">[('status','=','3')]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('kw_gallery.group_kw_gallery_viewer'))]"/>
        </record>

    </data>
</odoo>
