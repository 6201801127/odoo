<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kwantify_surveys_email_template" model="mail.template">
            <field name="name">Your Feedback</field>
            <field name="email_from">${ctx.get('user_email','')}</field>
            <field name="subject">${ctx.get('kw_subject_line','Default Subjectline')}</field>
            <field name="email_to">${object.employee_ids.work_email}</field>
            <field name="model_id" ref="kw_surveys.model_kw_surveys_details"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                % if ctx.get('kw_email_body'):
                    <![CDATA[
                        <table border="0">
                            <tr>
                                <td>
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Dear
                                        </span>
                                       <b> ${object.employee_ids.name},</b>
                                    </h5>

                                    <br/>
                                    ${(ctx.get('kw_email_body','') or '-') | safe}
                                    <br/>

                                    <div style="margin:20px 0 0 0; text-align:center;">
                                        <a href="${object.get_survey_url()}"  style="background-color: #108fbb; padding: 20px 30px 20px 30px; text-decoration: none; color: #fff; border-radius: 5px; font-size:30px;">
                                            %if object.email and object.survey_id.survey_type.code == 'ignite':
                                               Start
                                            % else:
                                                Click Here to Give Feedback
                                            %endif
                                        </a>
                                    </div>

                                    <br/>
                                    <hr/>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </td>
                            </tr>
                        </table>
                    ]]>
                % else:
                    Default Content to be put here
                %endif
            </field>
        </record>
    </data>
</odoo>