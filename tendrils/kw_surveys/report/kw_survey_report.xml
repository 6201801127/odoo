<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_survey_report_tree" model="ir.ui.view">
            <field name="name">view.kw_survey_report.tree</field>
            <field name="model">kw_survey_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_survey_report_tree" create="false" delete="false" edit="false">
                    <field name="work_location" />
                    <field name="department" />
                    <field name="division" />
                    <field name="section" />
                    <field name="practise" />
                    <field name="employee" class='font-weight-bold'/>
                    <field name="designation" />
                    <field name="status" class="font-weight-bold"/>
                    <field name="mode_of_work" />
                    <field name="current_location" />
                    <field name="power_supply_condition" />
                    <field name="computer_information" />
                    <field name="internet_connectivity" />
                    <field name="type_of_internet_connectivity" />
                    <field name="vpn_accessibility" />
                    <field name="how_is_your_office_setup_at_home" />
                    <field name="work_environment_at_home" />
                </tree>
            </field>
        </record>
              
        <!-- Search view for "model" -->
        <record id="view_kw_survey_report_search" model="ir.ui.view">
            <field name="name">view.kw_survey_report.search</field>
            <field name="model">kw_survey_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_survey_report_search">
                    <field name="employee" />
                    <group>
                        <filter name="group_by_status" string="Status" context="{'group_by':'status'}" />
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_kw_survey_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Kwantify Survey Report</field>
            <field name="res_model">kw_survey_report</field>
            <field name="view_mode">tree</field>
            <!-- <field name="view_type">form</field> -->
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_kw_survey_report_search" />
        </record>
       
    </data>
</odoo>
