<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="kwantify_surveys_form_view" name="Feedback Form">
            <t t-call="website.layout">
                <div class="container mt16">
                    <div class="row">
                        <div class="col-sm-8 col-offset-sm-4 mx-auto">
                            <div class="card">
                                <div class="csm card-header">
                                    <p class="text-center text-white h2 text-capitalize m-0" t-esc="kwantify_surveys.survey_name" />
                                </div>
                                <div class="card-body">
                                    <form role="form" id='kw_work_from_home_survey_form_view' method="post" name="kw_work_from_home_survey_form_view" action="#" t-att-data-prefill="'/kwantify/survey/prefill/%s/%s' % (slug(kwantify_surveys),token)">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="hidden" name="token" t-att-value="token" />

                                        <div class='clearfix mb-3'/>
                                        <div t-foreach="kwantify_surveys.survey_id.page_ids" t-as="page">
                                            <t t-set="i" t-value="1" />
                                            <div t-foreach='page.question_ids' t-as='question'>
                                                <t t-set="prefix" t-value="'%s_%s_%s' % (kwantify_surveys.survey_id.id, page.id, question.id)" />
                                                <div class="h5 ext-left align-middle mt-4 mb-2" style="font-weight: 700;">
                                                            Q<span t-esc="i"/>
.                                                <span t-field='question.question' class="font-weight-bold" />
                                                <t t-set="i" t-value="i+1"/>
                                                <span t-if="question.constr_mandatory" class="font-weight-bold text-danger">*</span>
                                            </div>

                                            <div class="mb-2" t-att-id="prefix">
                                                <t t-if="question.type == 'free_text'">
                                                    <t t-call="kw_surveys.kwantify_survey_free_text"/>
                                                </t>
                                                <t t-if="question.type == 'textbox'">
                                                    <t t-call="kw_surveys.kwantify_survey_textbox"/>
                                                </t>
                                                <t t-if="question.type == 'numerical_box'">
                                                    <t t-call="kw_surveys.kwantify_survey_numerical_box"/>
                                                </t>
                                                <t t-if="question.type == 'date'">
                                                    <t t-call="kw_surveys.kwantify_survey_date"/>
                                                </t>
                                                <t t-if="question.type == 'simple_choice'">
                                                    <t t-call="kw_surveys.kwantify_survey_simple_choice"/>
                                                </t>
                                                <t t-if="question.type == 'multiple_choice'">
                                                    <t t-call="kw_surveys.kwantify_multiple_choice"/>
                                                </t>
                                                <t t-if="question.type == 'matrix'">
                                                    <t t-call="kw_surveys.kwantify_survey_matrix"/>
                                                </t>
                                                <div class="js_errzone text-danger font-weight-bold font-italic" style="display:none;" role="alert"/>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="kwantify_surveyss_form_view_assets" inherit_id="kw_surveys.kwantify_surveys_form_view">
        <xpath expr="." position="inside">
            <script src="/web/static/lib/nvd3/d3.v3.js"/>
            <script src="/web/static/lib/nvd3/nv.d3.js"/>
            <script type="text/javascript" src="/kw_surveys/static/src/js/kw_survey_submit.js"/>
            <script type="text/javascript" src="/kw_training/static/src/lib/jquery.validate.min.js"/>
            <script type="text/javascript" src="/kw_training/static/src/lib/additional-methods.js"/>

            <script type="text/javascript" src="/web/static/src/js/chrome/public_root_widget.js"/>
            <script type="text/javascript" src="/web/static/src/js/fields/field_utils.js"/>
            <script type="text/javascript" src="/kw_surveys/static/src/js/kwantify_surveys_result.js"/>
            <script src="//cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
            <link href="/kw_surveys/static/src/css/front_style.css" rel="stylesheet"/>

            <t t-call="web._assets_frontend_helpers"/>
            <link href="/web/static/lib/nvd3/nv.d3.css" rel="stylesheet" type="text/css"/>
            <t t-call="web._assets_bootstrap"/>
            <link rel="stylesheet" type="text/less" href="/web/static/src/scss/fonts.scss"/>

            <link rel="stylesheet" type="text/less" href="/web_editor/static/src/scss/web_editor.common.scss"/>
            <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css?v=12" rel="stylesheet"/>
            <script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js?v=12"/>

            <!-- <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css"/> -->

        </xpath>
    </template>

</data>
</odoo>
