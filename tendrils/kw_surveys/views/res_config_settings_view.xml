<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kw_survey_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.auth</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="67"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_work_from_home_survey"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_work_from_home_survey"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>