<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="survey_label_form_inherit" model="ir.ui.view">
			<field name="name">kw_survey.survey_label.inherit.form</field>
			<field name="model">survey.question</field>
			<field name="inherit_id" ref="survey.survey_question_form"/>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='quizz_mark']" position="before">
					<field name="is_correct"/>
				</xpath>
				<xpath expr="//field[@name='quizz_mark']" position="attributes">
					<attribute name="groups" eval=""/>
				</xpath>
			</field>
		</record>
	

			<template id="template_survey_inherit" inherit_id="survey.back">
				<xpath expr="//div[hasclass('float-right')]" position="replace">
				
				</xpath>
		
			</template>
