    <record model="ir.actions.server" id="kw_training_notify_assessment_act_window">
        <field name="name">Start Survey</field>
        <field name="model_id" ref="model_kw_surveys"/>
        <field name="state">code</field>
        <field name="code">
survey_id = self._context.get('active_id')
form = self.env.ref('kw_surveys.kw_surveys_start_view_form').id
action = {
    "type": "ir.actions.act_window",
    "view_mode": "form",
    "view_id":form,
    "res_model": 'kw_surveys',
    "res_id": survey_id,
}
        </field>
    </record>

        <record id="kw_surveys_start_view_form" model="ir.ui.view">
            <field name="name">Send Mail</field>
            <field name="model">kw_surveys</field>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>

                    </group>
                    <footer>
                        <button name="send_assessment_notification_mail" string="Send Notification Mail" 
                        type="object" class="oe_highlight" />
                        Or      
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>