<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

        <record model="ir.ui.view" id="kw_survey_question_inherit_view">
			<field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
			<field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="replace">
                    <div class="oe_title" style="width: 100%; max-width: 100%;" >
                        <label for="question" string="Question name" class="oe_edit_only"/>
                        <div><field name="question" colspan="4" placeholder="Question Name"/></div>
                        <separator />
                    </div>
                </xpath>
			</field>
        </record>
       
    </data>
</odoo>