<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kwantify_survey_publish_wizard_form" model="ir.ui.view">
            <field name="name">Publish Wizard</field>
            <field name="model">kwantify_survey_publish_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <b>
                                <h2 class="text-center text-uppercase text-primary mb-5">Are you sure you want to publish?</h2>
                            </b>
                            <center>
                                <button name="publish_survey" type="object" class="btn-success mr-2">Publish</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kwantify_survey_publish_wizard_actions" groups='hr.group_hr_manager' name="Publish"
		            src_model="kw_surveys_details" res_model="kwantify_survey_publish_wizard"
		            view_type="form" view_mode="form" key2="client_action_multi" target="new" />
    </data>
</odoo>