<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="grievance_format" model="report.paperformat">
		<field name="name">Grievance Report</field>
		<field name="default" eval="True"/>
		<field name="format">A4</field>
		<field name="page_height">0</field>
		<field name="page_width">0</field>
		<field name="orientation">Landscape</field>
		<field name="margin_top">4</field>
		<field name="margin_bottom">4</field>
		<field name="margin_left">4</field>
		<field name="margin_right">4</field>
		<field name="header_line" eval="False"/>
		<field name="header_spacing">0</field>
		<field name="dpi">80</field>
	</record>

    <report
        id="grievance_reports_action_window"
        string="Download Report"
        model="grievance.ticket"
        report_type="qweb-pdf"
		attachment_use="True" 
        file="kw_grievance_new.grievance_report_pdf_action"
        name="kw_grievance_new.grievance_report_pdf_action"
        paperformat="kw_grievance_new.grievance_format"/>
</odoo>