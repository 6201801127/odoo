<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="grievance_report_pdf_action">
        <t t-call="web.html_container">
             <t t-foreach="docs" t-as="o"> 
                <t t-call="web.internal_layout">
                    <div>
                        <div style="width: 10%; align: center;">
                            <img style="width: 75%;" t-att-src="image_data_uri(o.company_id.logo)"/>
                        </div>
                        <h4>
                            <b>CSM TECHNOLOGIES</b>
                        </h4>
                    </div>
                    
                   
                    <table style="border: 1px solid black;border-collapse: collapse;width:100%">

                        <center>
                            <h4>
                                <b>Tendrils Grievance Report</b>
                            </h4>
                           
                        </center>
                        <br></br>
                        <br></br> 
                        <table style="border: 1px solid black;border-collapse: collapse;">
                            <tr class='row1' style="width:100%;height:50px;padding-top:15px">
                                <th style="border: 1px solid black;width:8%;padding-top:15px">
                                    <center>SL.no</center>
                                </th>
                                <th style="border: 1px solid black;width:8%;padding-top:15px">
                                    <center>Ticket Number</center>
                                </th>
                                <th style="border: 1px solid black;width:11%;padding-top:15px">
                                    <center>Category</center>
                                </th>
                                <th style="border: 1px solid black;width:12%;padding-top:15px">
                                    <center>Sub Category</center>
                                </th>
                                <th style="border: 1px solid black;width:12%;padding-top:15px">
                                    <center>Grievance Name</center>
                                </th>
                                <th style="border: 1px solid black;width:12%;padding-top:15px">
                                    <center>Team </center>
                                </th> 
                                <th style="border: 1px solid black;width:12%;padding-top:15px">
                                    <center>Team Member</center>
                                </th> 
                                <th style="border: 1px solid black;width:12%;padding-top:15px">
                                    <center>Stage</center>
                                </th>
                                <th style="border: 1px solid black;width:12%;padding-top:15px">
                                    <center>Priority</center>
                                </th>
                              
                            </tr>
                            <tr  style="border:1px solid black;margin-top:10px;height:50px;padding-top:15px;">
                                <t t-set="i" t-value="1" />
                                <td class="text-center" style="border:1px solid black;padding-top:15px;width:8%;"><span t-esc="i"/></td>
                                    <t t-set="i" t-value="i+1"/> 
                                <td class="text-center" style="border:1px solid black;padding-top:15px;width:11%;"><span t-field="o.number" t-options='{"format": "dd/MM/yyyy"}'/></td>
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.category_id" /></td>
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.sub_category"/></td>                                 
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.name"/></td>
                                <span t-esc="datetime.datetime.strptime(str(o.create_uid.create_date), '%Y-%m-%d %H:%M:%S.%f').strftime('%d/%m/%Y')"/>
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.team_id"/></td>
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.user_id"/></td>
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.stage_id"/></td>
                                <td class="text-center"  style="border:1px solid black;padding-top:15px;width:12%;"><span t-field="o.priority"/></td>

                            </tr> 
                        </table>
                    </table>
                </t>
            </t> 
        </t>
    </template>
    

    
    
</odoo>
