<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_whistle_blowing_tree" model="ir.ui.view">
        <field name="name">view.whistle_blowing_report.tree</field>
        <field name="model">whistle_blowing_report</field>
        <field name="arch" type="xml">
            <tree create='0' edit='0' delete='0' import='0'>
                <field name="id" string="SL No"/>
                <field name="number"/>
                <field name="create_date"/>
                <!-- <field name="users_id"/> -->
                <!-- <field name="name"/> -->
                <field name="category_id"/> 
                <field name="sub_category"/>
                <field name="user_id"/>
                <field name="raised_by" string="Raised For"/>
                <field name="users_id" string="Raised By"/>
                <field name="stage_id"/>
                <field name="remarks_for_done"/>
                <field name="closed_date"/>
                <button name="whistle_blowing_status_report_action_view" type="object" string="View Details" class="oe_highlight"/>
					
            </tree>
        </field>
    </record>

    <record id="view_whistle_blowing_tree_search" model="ir.ui.view">
        <field name="name">view_whistle_blowing_report_search</field>
        <field name="model">whistle_blowing_report</field>
        <field name="arch" type="xml">
            <search string="professional_tax_report_search">
                <field name="number"/>
                <field name="closed_date"/>
                <field name="create_date"/>
                <field name="users_id"/>
                <!-- <field name="name"/> -->
                <field name="category_id"/> 
                <field name="category_id"/>

                <field name="stage_id"/>
                <field name="remarks_for_done"/>
                <field name="user_id"/>
                <filter string="Today" name="todays_data" domain="[('create_date', '&lt;=',context_today().strftime('%Y-%m-%d')),('create_date', '&gt;=',context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" domain="[('create_date', 'like',context_today().strftime('%Y-%m'))]" name="this_month_salary"/>
                <separator/>
                <filter string="Last Month" domain="[('create_date','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('create_date','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_ticket"/>
                <filter string="Last Year" domain="[('create_date','&gt;',(context_today()-relativedelta(years=1)).strftime('%Y-%m-01')),('create_date','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_year_ticket"/>
                <filter name="groupby_category" string="Category" domain="[]" context="{'group_by':'category_id'}"/>
                <filter name="groupby_subcatgeory" string="Sub Category" domain="[]" context="{'group_by':'sub_category'}"/>
                <separator/>
                
            </search>
        </field>
    </record>
    <record id="whistle_blowing_report_action" model="ir.actions.act_window">
        <field name="name">Status Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">whistle_blowing_report</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>
    
</odoo>
