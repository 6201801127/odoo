<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <!-- Actions -->
        <record id="grievance_ticket_dashboard_action" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket.team</field>
            <field name="view_mode">kanban,tree,form,pivot</field>
            <field name="view_type">form</field>
        </record>

        <!-- <record id="grievance_ticket_action" model="ir.actions.act_window">
            <field name="name">Grievance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket</field>
            <field name="view_mode">tree,kanban,form,pivot</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_my_tickets': True}</field>
        </record> -->

        <record id="grievance_ticket_action_main" model="ir.actions.act_window">
            <field name="name">Grievance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket</field>
            <field name="view_mode">tree,kanban,form,pivot</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="domain">[('create_uid','=',uid)]</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_grievance_new.ticket_view_tree')}),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_grievance_new.view_grievance_ticket_kanban')})]"/>
        </record>

        <record id="whistleblowing_ticket_action_main" model="ir.actions.act_window">
            <field name="name"> Whistleblowing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_whistle_blowing</field>
            <field name="view_mode">tree,kanban,form,pivot</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="domain">[('create_uid','=',uid)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_grievance_new.whistle_blowing_view_tree')}),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_grievance_new.kw_whistle_blowing_view_kanban')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_grievance_new.kw_whistle_blowing_view_form')})]"/>
        </record>

        <record id="grievance_ticket_take_action_main" model="ir.actions.act_window">
            <field name="name">Grievance  Take Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket</field>
            <field name="view_mode">tree,kanban</field>
            <field name="view_type">form</field>
            <field name="context">{'take_action':True}</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_grievance_new.ticket_view_take_action_tree')}),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_grievance_new.view_grievance_ticket_take_action_kanban')})]"/>
        </record>


        <record id="whistleblowing_ticket_take_action_main" model="ir.actions.act_window">
            <field name="name">Wistleblowing  Take Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_whistle_blowing</field>
            <field name="view_mode">tree,kanban</field>
            <field name="view_type">form</field>
            <field name="context">{'take_action':True}</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_grievance_new.kw_whistle_blowing_view_take_action_tree')}),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_grievance_new.view_kw_whistle_blowing_take_action_kanban')}), 
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_grievance_new.kw_whistle_blowing_view_form')})]"/>
        </record>


        <record id="grievance_ticket_reporting_action" model="ir.actions.act_window">
            <field name="name">Reporting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket</field>
            <field name="view_mode">pivot,graph</field>
            <field name="view_type">form</field>
        </record>

        <record id="grievance_ticket_channel_action" model="ir.actions.act_window">
            <field name="name">Channels</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket.channel</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record id="grievance_ticket_category_action" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket.category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record id="grievance_ticket_subcategory_action" model="ir.actions.act_window">
            <field name="name">Sub Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grievance.ticket.subcategory</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

