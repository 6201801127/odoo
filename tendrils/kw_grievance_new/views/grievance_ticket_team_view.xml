<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_grievance_ticket_team_search" model="ir.ui.view">
        <field name="name">grievance.ticket.team.search</field>
        <field name="model">grievance.ticket.team</field>
        <field name="arch" type="xml">
            <search string="grievance Team Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="user_ids" string="User" filter_domain="[('user_ids', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="view_grievance_team_form" model="ir.ui.view">
        <field name="name">view.grievance_team.form</field>
        <field name="model">grievance.ticket.team</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <header>
                    <!-- <button name="submit_action_button" 
                            string="Submit" 
                            type="object" 
                            class='btn-primary'
                            attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="assign_subcategory" 
                            string="Assign" 
                            type="object" 
                            class='btn-primary'
                            attrs="{'invisible':[('state','!=','assigned')]}"/>
                    <field name="state" widget="statusbar" /> -->
                    
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                            <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1"/></h1>
                    </div>
                    <group name="main">
                        <field name="code" required="1"/>
                        <field name="user_ids" widget="many2many_tags" options="{'no_create':True,'no_delete':True,'no_update':True,'no_open':True}" required="1"/>
                        <field name="second_level_ids" widget="many2many_tags" options="{'no_create':True,'no_delete':True,'no_update':True,'no_open':True}"/>
                        <field name="third_level_ids" widget="many2many_tags" options="{'no_create':True,'no_delete':True,'no_update':True,'no_open':True}" invisible="1"/>
                        <!-- <field name="third_level_ids" widget="many2many_tags" options="{'no_create':True,'no_delete':True,'no_update':True,'no_open':True}"/> -->
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create':True,'no_delete':True,'no_update':True,'no_open':True}" invisible="1"/>
                    </group>
                    <group>
                        <group name="left" invisible="1"> 
                            <label for="alias_name" string="Email Alias" />
                            <div class="oe_inline" name="alias_def">
                                <field name="alias_id" class="oe_read_only oe_inline"
                                    string="Email Alias" required="0" />
                                <div class="oe_edit_only oe_inline" name="edit_alias" style="display: inline;" >
                                    <field name="alias_name" class="oe_inline"/>@<field name="alias_domain" class="oe_inline" readonly="1" />
                                    <button  icon="fa-arrow-right" type="action" name="%(base_setup.action_general_configuration)d" string="Configure domain name" class="btn-link" attrs="{'invisible': [('alias_domain', '!=', False)]}"/>
                                </div>
                            </div>
                            <field name="alias_contact" class="oe_inline"
                                string="Accept Emails From" />
                            <field name="alias_user_id" string="Assign to" />
                            
                        </group>
                        <group>
                            <field name="random_assign"/>
                            <field name="escalation_days"/>
                        </group>
                        
                    </group>
                    <!-- <notebook>
                        <page string="Category" >
                        
                            <field name="category_ids" />
                          
                        </page>
                    </notebook> -->
                    <notebook >
                        <page string="Sub-Category" >
                            <field name="sub_category_ids">
                                <tree editable="bottom">
                                    <field name="sub_category_id"/>
                                    <field name="team_id" invisible="1"/>
                                </tree>
                            </field>
                          
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_grievance_team_tree" model="ir.ui.view">
        <field name="name">view.grievance_team.tree</field>
        <field name="model">grievance.ticket.team</field>
        <field name="arch" type="xml">
            <tree string="Category">
                <field name="name" string="Catgeory"/>
                <!-- <field name="category_ids" widget="many2many_tags"/> -->
                <field name="todo_ticket_count" string="Active tickets"/>
                <field name="onhold_ticket_count" string="Onhold Ticket"/>
                <field name="inprogress_ticket_count" string="InProgress tickets"/>
                <field name="completed_ticket_count" string="Done tickets"/>
                <field name="cancelled_ticket_count" string="Cancelled tickets"/>
                <!-- <field name="todo_ticket_count_unassigned" string="Unassigned tickets"/> -->
                <!-- <field name="todo_ticket_count_unattended" string="Unattended tickets"/> -->
                <field name="todo_ticket_count_high_priority" string="Priority tickets"/>
                <field name="todo_ticket_count_close_total" string="Close tickets"/>
                <!-- <field name="random_assign"/> -->
            </tree>
        </field>
    </record>

</odoo>
