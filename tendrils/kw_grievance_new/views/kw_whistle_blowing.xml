<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="action_whistle_blowing_ticket_kanban_from_dashboard" model="ir.actions.act_window">
        <field name="name">Whistleblowing Ticket</field>
        <field name="res_model">kw_whistle_blowing</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">
            {'default_team_id': active_id,}
        </field>
        <field name="domain">[('team_id', '=', active_id)]</field>
    </record>

    <record id="whistle_blowing_view_search" model="ir.ui.view">
        <field name="name">whistle_blowing_view_search</field>
        <field name="model">kw_whistle_blowing</field>
        <field name="arch" type="xml">
            <search>
                <field string="Ticket" name="number" filter_domain="['|',('number', 'ilike', self),('name', 'ilike', self)]"/>
                <field name="partner_id"/>

                <field name="user_id"/>
                <field name="category_id"/>

                <!-- <field name="name"/> -->
                <field name="tag_ids"/>
                <field name="stage_id"/>
                <filter string="InProgress" name="inprogress" domain="[('stage_id','=','In Progress')]"/>
                <filter string="Onhold" name="onhold" domain="[('stage_id','=','Hold')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('stage_id','=','Cancelled')]"/>
                <filter string="Done" name="done" domain="[('stage_id','=','Done')]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('user_id','=',False)]"/>
                <filter string="Assigned" name="assigned" domain="[('user_id','!=',False)]"/>
                <filter string="Open" name="open" domain="[('closed', '=', False )]" />
                <filter string="Unattended" name="unattended" domain="[('unattended', '=', True )]" groups='kw_grievance_new.group_grievance_user'/>
                <filter string="High Priority" name="high_priority" domain="[('priority','=','3')]"/>
                <separator/>
                <filter string="My Tickets" name="my_tickets" domain="['|',('user_id','=',uid),('users_id','=',uid)]"/>
                <filter string="My Followed Tickets" name="my_followed_tickets" domain="[('message_is_follower', '=', True)]" />
                <separator/>
                <filter name="last_week" string="Last Week" domain="[('create_date','&gt;', (context_today() - datetime.timedelta(weeks=1)).strftime('%%Y-%%m-%%d') )]"/>
                <separator/>
                <group expand="0" string="Group By" >
                    <filter string="Partner" name="group_partner" domain="[]" context="{'group_by':'partner_id'}" groups='kw_grievance_new.group_grievance_user'/>
                    <filter string="Team" name="group_team" domain="[]" context="{'group_by':'team_id'}" groups='kw_grievance_new.group_grievance_user'/>
                    <filter string="User" name="group_user" domain="[]" context="{'group_by':'user_id'}" groups='kw_grievance_new.group_grievance_user'/>
                    <filter string="Stage" name="group_stage" domain="[]" context="{'group_by':'stage_id'}" groups='kw_grievance_new.group_grievance_user'/>
                </group>
            </search>
        </field>
    </record>
    <record id="kw_whistle_blowing_view_form" model="ir.ui.view">
        <field name="name">whistle.ticket.view.form</field>
        <field name="model">kw_whistle_blowing</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <form string="Whistleblowing Ticket">
                <script >
                    $('textarea[name="grievance_description"]').on("input", function() {
                    $('#description').show()
                    var currentLength = $(this).val().length;
                    $('textarea[name="grievance_description"]').attr('maxlength',500);
                    var textlen = 500 - $(this).val().length;
                    $('#description').text(textlen + " Left");
                    });

                    $('#description').text() == '500 Left'?$('#description').hide():$('#description').show()
                </script>
                <header>
                    <button string="Raise Whistleblowing"
                            name="raise_whistleblowing_action"
                            class="btn-primary"
                            attrs="{'invisible':[('code','!=','DF')]}"
                            type="object"
                    />
                    <button string="Accept Ticket"
                            name="accept_ticket"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible':['|',('code','not in',['DF','N']),('team_id','=',False)]}"
                            groups ="kw_grievance_new.group_grievance_user"
                    />
                    <button name="assign_spoc_action"
                            string="Assign SPOC Person"
                            type="object" class="btn-primary"
                            attrs="{'invisible':['|',('user_id','!=',False),('code','=','DF')]}"
                            context="{'category_id':category_id}"
                            groups="kw_grievance_new.group_grievance_manager"/>
                    <button name='%(whistle_remarks_wizard_action)d'
                            string='GoTo In Progress Stage'
                            type='action'
                            class='btn-primary'
                            attrs="{'invisible':[('code','!=','H')]}"/>
                    <button name="%(whistle_awaiting_remarks_wizard_action)d"
                            string="Hold"
                            type="action" class="btn-warning"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <button name="%(whistle_new_team_assign_wizard_action)d"
                            string="Forward"
                            type="action" class="btn-primary"
                            groups="kw_grievance_new.group_grievance_user"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <button name="%(whistle_cancelled_remarks_wizard_action)d"
                            string="Reject"
                            type="action" class="btn-danger"
                            groups="kw_grievance_new.group_grievance_user"
                            attrs="{'invisible':['|',('code','not in',['DF','N']),('team_id','=',False)]}"/>
                    <button name="%(whistle_done_remarks_wizard_action)d"
                            string="Close"
                            type="action" class="btn-success"
                            attrs="{'invisible':['|',('code','!=','IP'),('is_assign_ticket','!=',True)]}"/>
                    <field name="stage_id" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="1">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="number"/>
                        </h1>

                    </div>
                    <group name="main">
                        <group>
                            <field name="request" widget="radio" groups="kw_grievance_new.group_grievance_user" options="{'horizontal': true}"/>
                            <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                            attrs="{'readonly':[('code','!=','DF')]}"/>
                            <field name="sub_category" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly':[('code','!=','DF')]}"/>
                            <!-- <field name="name" attrs="{'readonly':['|',('code','=','D'),('code','=','C')]}"/> -->
                            <field name="request_bool" invisible="1"/>
                            <field name="priority" widget="priority" groups="kw_grievance_new.group_grievance_manager" />
                            <field name="team_id" string='Category Name' options='{"always_reload": True,"no_create":True,"no_update":True,"no_delete":True,"no_open":True}' readonly="1" groups="kw_grievance_new.group_grievance_user" attrs="{'invisible':[('team_id','=',False)]}"/>
                            <field name="user_ids" invisible="1" readonly="1" />
                            <field name="user_id" options='{"always_reload": True,"no_create":True,"no_update":True,"no_delete":True,"no_open":True}' readonly="1" groups="kw_grievance_new.group_grievance_user" attrs="{'invisible':[('user_id','=',False)]}" />
                            <field name="code" invisible="1"/>
                            <field name="company_id" options="{'no_create': True,'no_open': True}" groups="base.group_multi_company" invisible="1"/>
                            <field name="create_date" readonly="1" attrs="{'invisible': [('create_date','=',False)]}"/>
                            <field name="channel_id" invisible="1"/>
                            <!-- <field name="duration" id="real_duration" widget="countdown" style="color: red;" />
                            <field name="ticket_duration" widget="newcountdown" style="color: red;" />
                            <field name="hold_ticket_duration" widget="holdcountdown" style="color: red;" /> -->
                            <field name="last_stage_update" readonly="1" attrs="{'invisible':[('last_stage_update','=',False)]}" invisible="1"/>
                            <field name="assigned_date" readonly="1" attrs="{'invisible':[('assigned_date','=',False)]}"/>
                            <field name="closed_date" readonly="1" attrs="{'invisible':[('closed_date','=',False)]}"/>
                            <field name="is_assign_ticket" invisible="1"/>
                            <label for="grievance_description" />
                            <div>
                                <field name="grievance_description" required="1" attrs="{'readonly':[('code','!=','DF')]}"/>
                                <p id="description"></p>
                                <field name="word_limit" invisible="1"/>
                            </div>

                        </group>
                        <group>
                            <!-- <field name="partner_id" /> -->
                            <field name="users_id" attrs="{'readonly': ['|',('request','=','self'),('request_bool', '=', True)]}"
                                   options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"
                            />

                            <!-- <field name="emp_code"/> -->
                            <field name="emp_dept"/>
                            <field name="emp_desig"/>
                            <field name="users_email"/>
                            <field name="users_phone"/>

                            <!-- <field name="partner_name"/> -->
                            <!-- <field name="partner_email" /> -->

                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" invisible="1"/>
                            <!-- <field name="sequence" groups="base.group_no_one"/> -->
                            <field name="attachment_type" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('code','!=','DF')]}"/>
                            <!-- <field name="attachment" attrs="{'invisible': [('attachment_type', 'in', ['url','audio','video'])],'required':[('attachment_type','=','url')],'readonly':['|',('code','=','D'),('code','=','C')]}" /> -->
                            <field name="file_name" invisible='1'/>
                            <label for="attachment" attrs="{'invisible': ['|',('attachment_type', 'in', ['none','url','audio','video'])]}"/>
                            <div>
                                <field name="attachment" options="{'size': [1000, 1000]}" filename="file_name" widget="FieldBinary"  attrs="{'invisible': [('attachment_type', 'in', ['none','url','audio','video'])]}"/>
                                <p style="color:red;"  attrs="{'invisible': ['|',('attachment_type', 'in', ['none','url','audio','video']),('attachment','!=',False)],'required':[('attachment_type','=','attachment')]}">(pdf, jpg, word and excel format are allowed.
                                    <br/>Maximum file size is 4 MB)</p>&amp;nbsp;&amp;nbsp;
                            </div>
                            <field name="url_attachment" widget='url' attrs="{'invisible': [('attachment_type', 'in', ['none','attachment','audio','video'])]}"/>
                            <field name="video_attachment"  widget='video' filename="file_name" attrs="{'invisible': [('attachment_type', 'in', ['none','attachment','url','audio'])]}"/>
                            <field name="audio_attachment"  widget='audio' filename="file_name" attrs="{'invisible': [('attachment_type', 'in', ['none','attachment','url','video'])]}"/>
                            <field name="remarks_for_inprogress" readonly="1" attrs="{'invisible': [('remarks_for_inprogress','=',False)]}"/>
                            <field name="remarks_for_awaiting"  readonly="1" attrs="{'invisible': [('remarks_for_awaiting','=',False)]}"/>
                            <field name="remarks_for_cancelled" readonly="1" attrs="{'invisible': [('remarks_for_cancelled','=',False)]}"/>
                            <field name="remarks_for_done"  readonly="1" attrs="{'invisible': [('remarks_for_done','=',False)]}"/>
                            <field name="forward_reason"  invisible="1" attrs="{'invisible': [('forward_reason','=',False)]}"/>
                            <field name="approver_user_ids" invisible="1"/>
                        </group>


                        <group>


                        </group>
                    </group>

                </sheet>
                <group name="aaa" groups="kw_grievance_new.group_grievance_user">
                    <div class="oe_chatter" >
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </group>
            </form>
        </field>
    </record>
