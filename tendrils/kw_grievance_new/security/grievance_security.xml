<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <record id="group_grievance_user_own" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_grievance_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- <function name="write" model="res.users">
        <function name="search" model="res.users">
            <value eval="[('active', '=', True),('groups_id','in',ref('base.group_user'))]"/>
        </function>
        <value eval="{'groups_id':[[4,ref('group_grievance_user_own')]] }" />
    </function> -->

    <record id="group_grievance_user" model="res.groups">
        <field name="name">SPOC Person</field>
        <field name="category_id" ref="module_grievance_category"/>
        <field name="implied_ids" eval="[(4, ref('group_grievance_user_own'))]"/>
    </record>

    <record id="group_grievance_manager" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_grievance_category"/>
        <field name="implied_ids" eval="[(4, ref('group_grievance_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <!-- <record id="group_grievance_officer" model="res.groups">
        <field name="name">Grievance Officer</field>
        <field name="category_id" ref="module_grievance_category"/>
        <field name="implied_ids" eval="[(4, ref('group_grievance_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record> -->

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('kw_grievance_new.group_grievance_user_own'))]"/>
    </record>

</data>

<data noupdate="0">


    <record id="grievance_ticket_personal_rule" model="ir.rule">
        <field name="name">Personal Grievance Tickets</field>
        <field ref="model_grievance_ticket" name="model_id"/>
        <field name="domain_force">['|',('create_uid','=',user.id),('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_grievance_user_own'))]"/>
    </record>

    <record id="grievance_ticket_user_rule" model="ir.rule">
        <field name="name">All Tickets</field>
        <field ref="model_grievance_ticket" name="model_id"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_grievance_user'))]"/>
    </record>

    <record id="grievance_ticket_engineer_rule" model="ir.rule">
        <field name="name">Engineer Readonly Rule</field>
        <field ref="model_grievance_ticket" name="model_id"/>
        <field name="domain_force">[('approver_user_ids','in',user.ids)]</field>
        <field name="groups" eval="[(4, ref('group_grievance_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="grievance_ticket_manager_rule" model="ir.rule">
        <field name="name">All Tickets</field>
        <field ref="model_grievance_ticket" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_grievance_manager'))]"/>
    </record>
    <!-- <record id="grievance_ticket_officer_rule" model="ir.rule">
        <field name="name">All Tickets</field>
        <field ref="model_grievance_ticket" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_grievance_user_own'))]"/>
    </record> -->

    <!-- Company Rules -->
    <record id="grievance_ticket_comp_rule" model="ir.rule">
        <field name="name">grievance Ticket Company Rule</field>
        <field name="model_id" ref="model_grievance_ticket"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="grievance_ticket_category_comp_rule" model="ir.rule">
        <field name="name">grievance Category Company Rule</field>
        <field name="model_id" ref="model_grievance_ticket_category"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="grievance_ticket_channel_comp_rule" model="ir.rule">
        <field name="name">grievance Channel Company Rule</field>
        <field name="model_id" ref="model_grievance_ticket_channel"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="grievance_ticket_stage_comp_rule" model="ir.rule">
        <field name="name">grievance Stage Company Rule</field>
        <field name="model_id" ref="model_grievance_ticket_stage"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="grievance_ticket_tag_comp_rule" model="ir.rule">
        <field name="name">grievance Tag Company Rule</field>
        <field name="model_id" ref="model_grievance_ticket_tag"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="grievance_ticket_team_comp_rule" model="ir.rule">
        <field name="name">grievance Team Company Rule</field>
        <field name="model_id" ref="model_grievance_ticket_team"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <!-- Portal for grievance -->
    <record id="grievance_ticket_rule_portal" model="ir.rule">
        <field name="name">Portal Personal Tickets</field>
        <field name="model_id" ref="model_grievance_ticket"/>
        <field name="domain_force">['|',
            ('partner_id', 'child_of', [user.commercial_partner_id.id]),
            ('message_partner_ids','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
    </record>

</data>
</odoo>
