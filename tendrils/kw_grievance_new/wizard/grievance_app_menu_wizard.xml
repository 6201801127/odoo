<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="grievance_app_menu_wizard_form_view" model="ir.ui.view">
        <field name="name">grievance.app.menu.wizard.form.view</field>
        <field name="model">grievance.app.menu.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <script>
                    $(document).ready(function(){
                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        $(".modal-footer").hide();
                    });
                </script>
                <div class="d-flex jusitfy-content-center flex-column">
                    <div>
                        <table class="mx-auto">
                            <tr>
                                <button class="button-33" style="margin-right: 50px;" string="Grievance  " name="action_for_raise_grievance"
                                type="object" default_focus="1"/>
                                <button class="button-33" string="Whistleblowing" name="action_for_raise_whistleblowing" 
                                type="object"/>
                            </tr>
                        </table>
                    </div>
                </div>
            </form>
        </field>
      </record>

    <record id="grievance_app_menu_wizard_action" model="ir.actions.act_window">
        <field name="name"></field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">grievance.app.menu.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!--Add Text Here -->
            </p>
        </field>
    </record>

    <template id="assets_backend" name="kw_grievance_new assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/kw_grievance_new/static/css/button.css"/>
        </xpath>
    </template>


</odoo>
