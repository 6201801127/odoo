<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <record id="kw_grievance_report_wizard_view" model="ir.ui.view">
        <field name="name">Kwantify Grievance Report</field>
        <field name="model">kw.grievance.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="applied_by" widget="radio" options="{'horizontal': true}"/>
                        <field name="grievance_state" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('applied_by', 'in', ['grievance'])]}" invisible="1"/>
                        <field name="year" attrs="{'invisible': [('applied_by', 'in', ['dt','grievance','all','battalion'])],'required':[('applied_by', '=', 'my')]}"/>
                        <field name="month" attrs="{'invisible': [('applied_by', 'in', ['dt','grievance','all','battalion'])],'required':[('applied_by', '=', 'my')]}"/>
                        <field name="date_from" attrs="{'invisible': [('applied_by', 'in', ['my','grievance','all','battalion'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />
                        <field name="date_to" attrs="{'invisible': [('applied_by', 'in', ['my','grievance','all','battalion'])],'required':[('applied_by', '=', 'dt')]}" widget="date" />
                        <field name="grievance_ids" widget="many2many_tags" attrs="{'invisible': [('applied_by', 'in', ['my','dt','all'])],'required':[('applied_by', '=', 'grievance')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>

                    </group>
                </group>
                <footer>
                    <button name="get_emp_grievance_data" string="View Reports" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="kw_grievance_action" model="ir.actions.act_window">
        <field name="name">Kwantify Grievance Report</field>
        <field name="res_model">kw.grievance.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="kw_grievance_new.kw_grievance_report_wizard_view"/>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records to show...
            </p>
        </field>
    </record>

    </data>
</odoo>