<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- update Project managers form -->
        <record id="view_kw_update_user_wizard" model="ir.ui.view">
            <field name="name">rnr.kw_update_user_wizard.form</field>
            <field name="model">kw_update_user_wizard</field>
            <field name="arch" type="xml">
                <form string="update project manager" edit='1'>
                    <group>
                        <field name="update_group" string='Starlight Group' widget="radio" options="{'horizontal': true}"  />
                    </group>
                    <group>
                        <div class="col-10">
                            <table class="table table-bordered">
                                <tr style="font-size:10px;" attrs="{'invisible': [('update_group','in',['officer','reviewer'])],'required': [('update_group','=','sbu_hod')]}">
                                    <td><i style="color:rgb(22, 123, 158);"/><b>&amp;nbsp;&amp;nbsp;Department Heads</b></td>
                                    <td>
                                        <field name="dept_head_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>                                    </td>
                                </tr>
                                <tr style="font-size:10px;" attrs="{'invisible': [('update_group','in',['officer','reviewer'])],'required': [('update_group','=','sbu_hod')]}">
                                    <td><i style="color:rgb(22, 123, 158);"/><b>&amp;nbsp;&amp;nbsp;SBU Representatives</b></td>
                                    <td>
                                        <field name="sbu_head_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                    </td>
                                </tr>
                                <tr style="font-size:10px;" attrs="{'invisible': [('update_group','in',['officer','reviewer'])]}">
                                    <td><i style="color:rgb(22, 123, 158);"/><b>&amp;nbsp;&amp;nbsp;Existing Department Heads in SBU/HOD group</b></td>
                                    <td>
                                        <field name="existing_dept_head_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                    </td>
                                </tr>
                                <tr style="font-size:10px;" attrs="{'invisible': [('update_group','in',['officer','reviewer'])]}">
                                    <td><i style="color:rgb(22, 123, 158);" /><b>&amp;nbsp;&amp;nbsp;Existing SBU Representatives in SBU/HOD group</b></td>
                                    <td>
                                        <field name="existing_sbu_head_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </td>
                                </tr>
                                <tr style="font-size:10px;" attrs="{'invisible': [('update_group','in',['officer','sbu_hod'])],'required': [('update_group','=','reviewer')]}">
                                    <td><i style="color:rgb(22, 123, 158);"/><b>&amp;nbsp;&amp;nbsp;Select Reviewer</b></td>
                                    <td>
                                        <field name="reviewer" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </td>
                                </tr>
                                <tr style="font-size:10px;" attrs="{'invisible': [('update_group','in',['officer','sbu_hod'])]}">
                                    <td><i style="color:rgb(22, 123, 158);"/><b>&amp;nbsp;&amp;nbsp;Existing Reviewer</b></td>
                                    <td>
                                        <field name="existing_reviewer_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </td>
                                </tr>
                                
                            </table>
                        </div>
                        <!-- <field name="update_group" string='RNR Group' widget="radio" options="{'horizontal': true}"  /> -->
                        <!-- <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs="{'invisible': [('update_group','in',['sbu_hod','reviewer'])],'required': [('update_group','=','officer')]}"/> -->
                        <!-- <field name="employee_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" string="Employees" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['sbu_hod','reviewer'])],'required': [('update_group','=','officer')]}"/> -->
                        <!-- <field name="dept_head_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['officer','reviewer'])],'required': [('update_group','=','sbu_hod')]}"/> -->
                        <!-- <field name="sbu_head_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['officer','reviewer'])],'required': [('update_group','=','sbu_hod')]}"/> -->
                        <!-- <field name="reviewer" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['officer','sbu_hod'])],'required': [('update_group','=','reviewer')]}"/> -->
                        <!-- <field name="existing_reviewer_ids" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['officer','sbu_hod'])]}"/> -->
                        <!-- <field name="existing_dept_head_ids" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['officer','reviewer'])]}"/> -->
                        <!-- <field name="existing_sbu_head_ids" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags" attrs="{'invisible': [('update_group','in',['officer','reviewer'])]}"/> -->
                    </group>
                    <newline/>
                    <footer>
                        <button name="update_user_group" string="Update Group User"
                            colspan="1" type="object" icon="fa-smile-o" class="btn btn-success" context="{'update_project_managers':True}"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_kw_update_user_wizard">
            <field name="name">Update Group User</field>
            <field name="res_model">kw_update_user_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kw_update_user_wizard"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>