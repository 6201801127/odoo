<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_rnr_remark_wizard" model="ir.ui.view">
            <field name="name">rnr.remark.wizard</field>
            <field name="model">rnr_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <field name="rnr_id" invisible='1'/>
                    <field name="hide_note" invisible='1'/>
                    <field name="hide_button" invisible='1'/>
                    <field name="hide_remark" invisible='1'/>
                    <div class='text-center' attrs="{'invisible': [('hide_remark','=',False)]}">
                        <h5 class='text-danger'>Are you sure want to Nominate?</h5>
                    </div>
                    <group>
                        <field name="remark" attrs="{'invisible': [('hide_remark','=',True)],'required': [('hide_remark','=',False)]}"/>
                        <field name="send_to_emp" attrs="{'invisible': ['|',('hide_button','=',True),('hide_note','=',True)],'required': [('hide_button','=',False),('hide_note','=',False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        <field name="send_to_emps" string='Publishers' widget="many2many_tags" attrs="{'invisible': ['|',('hide_button','=',False),('send_to_emps','=',[])]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    </group>
                        <div class='text-center' attrs="{'invisible': ['|',('hide_button','=',False),('hide_note','=',True)]}">
                            <h5 class='text-danger'>NOTE*: Reviewers need to Award the Nominees.</h5>
                        </div>

                    <newline/>
                    <footer>
                        <button name="button_confirm" string="Confirm"
                            colspan="1" type="object" icon="fa-smile-o" class="btn btn-success" />
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_rnr_remark_wizard">
            <field name="name">Remark</field>
            <field name="res_model">rnr_remark_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_rnr_remark_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>