<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="forward_to_next_month_wizard_form" model="ir.ui.view">
        <field name="name">forward_to_next_month Wizard Form</field>
        <field name="model">forward_to_next_month</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <div>
                        <h3 class="text-danger text-center"> Are you sure,you want to foward the starlight records to next month.?  </h3>
                    </div>
                    <div>
                        <group>
                            <field name="year" required='1'/>
                            <field name="month" required='1'/>
                            <field string="Records to Forward" name="starlight_ids" required='1'>
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="job_id"/>
                                    <field name="location"/>
                                    <field name="department_id"/>
                                    <field name="state"/>
                                    <field name="compute_year"/>
                                    <field name="compute_month"/>
                                    <field name="create_date" widget='date'/>
                                </tree>
                            </field>
                        </group>
                    </div>
                </sheet>
                <footer>    
                    <button string="Forward" name="forward_to_next_month" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
        </record>



    <act_window id="forward_to_next_month_action_window" name="Forward To Next Month" src_model="reward_and_recognition" 
        res_model="forward_to_next_month" view_mode="form" view_type="form" view_id="forward_to_next_month_wizard_form" 
        context="{'starlight_forwarded_ids': active_ids}" key2="client_action_multi" target="new" groups="kw_reward_and_recognition.rnr_manager"/>
 </data>
</odoo>