<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_rnr_report_wizard" model="ir.ui.view">
            <field name="name">rnr.report.wizard</field>
            <field name="model">rnr_report_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <group >
                            <field name="year" required='1'/>
                            <field name="month" required='1'/>
                            <field name="rnr_state" string="Status" widget='radio' options="{'horizontal': true}" required='1' />
                        </group>
                        <!-- <field name="send_to_emp" attrs="{'invisible': [('hide_button','=',True)],'required': [('hide_button','=',False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" groups="kw_reward_and_recognition.rnr_sbu,kw_reward_and_recognition.rnr_reviewer"/> -->
                    </group>

                    <newline/>
                    <footer>
                        <button name="view_rnr_report" string="View Report"
                            colspan="1" type="object" icon="fa-smile-o" class="btn btn-success" />
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_rnr_report_wizard">
            <field name="name">Starlight Report</field>
            <field name="res_model">rnr_report_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_rnr_report_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>