<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="congratulation_mailer_wizard_wizard_form" model="ir.ui.view">
        <field name="name">congratulation_mailer_wizard Wizard Form</field>
        <field name="model">congratulation_mailer_wizard</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <div>
                        <h3 class="text-danger text-center"> Are you sure,you want to send congratulation mail.?  </h3>
                    </div>
                    <div>
                        <group>
                            <field name="year" required='1'/>
                            <field name="month" required='1'/>
                            <field string="Published Records" name="starlight_ids" required='1'>
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="job_id"/>
                                    <field name="location"/>
                                    <field name="department_id"/>
                                    <field name="state"/>
                                    <field name="compute_year"/>
                                    <field name="compute_month"/>
                                    <field name="create_date" widget='date'/>
                                </tree>
                            </field>
                        </group>
                    </div>
                </sheet>
                <footer>    
                    <button string="Send" name="send_congratulation_mail" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
        </record>

    <record id="congratulation_mailer_wizard_action_window" model="ir.actions.act_window">
        <field name="name">Send Congratulation Mail</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">congratulation_mailer_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="congratulation_mailer_wizard_wizard_form"/>
        <field name="target">new</field>
    </record>

    
 </data>
</odoo>