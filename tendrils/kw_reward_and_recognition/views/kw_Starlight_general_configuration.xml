<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="kw_starlight_general_configuration_view_form" model="ir.ui.view">
            <field name="name">kw_starlight_general_configuration.view.form</field>
            <field name="model">kw_starlight_general_configuration</field>
            <field name="arch" type="xml">
                <form string="Reward And Recognition" duplicate='0' create='0' delete='0'>
                    <sheet>
                    <group >
                         <div class=" table-responsive" style="width:70%">
                                    <table class="o_list_view table table-sm table-hover table-striped o_list_view_ungrouped">
                                        <tbody class="ui-sortable">
                                            <tr>
                                                <td scope="row" style="width: 55%;"><strong>CC Notify</strong></td>
                                                <td>
            										<field name="cc_notify"  groups='kw_reward_and_recognition.rnr_manager' widget="many2many_tags"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Nomination Start Date</strong></td>
                                                <td>
            										 <field name="nomination_start_date" groups='kw_reward_and_recognition.rnr_manager' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Nomination End Date</strong></td>
                                                <td>
            										 <field name="nomination_end_date" groups='kw_reward_and_recognition.rnr_manager' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Review Start Date</strong></td>
                                                <td>
            										<field name="review_start_date" groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                             <tr>
                                                <td scope="row"><strong>Review End Date</strong></td>
                                                <td>
            										<field name="review_end_Date" groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Publish Start Date</strong></td>
                                                <td>
            										<field name="show_publish_option_date" groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Publish End Date</strong></td>
                                                <td>
            										<field name="show_publish_option_end_date" groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Congratulation Reminder</strong></td>
                                                <td>
            										<field name="congratulation_reminder" groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Congratulation Mail From</strong></td>
                                                <td>
            										 <field name="congratulation_mail_from"  groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td scope="row"><strong>Congratulation Mail To</strong></td>
                                                <td>
                                                    <field name="congratulation_mail_to" groups='kw_reward_and_recognition.rnr_manager'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_starlight_general_configuration_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">kw_starlight_general_configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
             <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_reward_and_recognition.kw_starlight_general_configuration_view_form')})]"/>
        </record>

        <record id="kw_starlight_general_configuration_server_action" model="ir.actions.server">
			<field name="name">Settings</field>
			<field name="model_id" ref="model_kw_starlight_general_configuration"/>
			<field name="state">code</field>
			<field name="code">
				action = model.redirect_starlight_configuration()
			</field>
		</record>
    </data>
</odoo>