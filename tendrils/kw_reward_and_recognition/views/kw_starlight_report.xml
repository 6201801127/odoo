<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_starlight_report_tree_view">
            <field name="name">kw_starlight_report Tree</field>
            <field name="model">kw_starlight_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name ='job_id'/>
                    <field name ='reason_type_id'/>
                    <field name ='reason'/>
                    <field name="nominated_by" invisible='1'/>
                    <field name="pending_at" invisible='1'/>
                    <field name="reviewed_by" invisible='1'/>
                    <field name ='state' invisible='1'/>
                    <field name ='rnr_id' invisible='1'/>
                    <field name="month_name" invisible='1'/>
                    <field name ='month' invisible='1'/>
                    <field name ='year' invisible='1'/>
                    <field name ='department_id' invisible='1'/>
                    <field name ='division_id' invisible='1'/>
                    <field name ='section_id' invisible='1'/>
                    <field name ='practise_id' invisible='1'/>
                    <field name ='nominated_on' invisible='1'/>
                    <field name ='publish_on' invisible='1'/>
                    <field name ='rnr_division_id' invisible='1'/>
                    <field name="location" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="kw_starlight_report_view_report_search_view" model="ir.ui.view">
            <field name="name">kw_starlight_report.report.search</field>
            <field name="model">kw_starlight_report</field>
            <field name="arch" type="xml">
                <search string="Fields">
                        <field name="employee_id"/>
                        <field name="nominated_by"/>
                        <field name="rnr_division_id" string='Starlight Department'/>
                        <field name ='department_id'/>
                        <field name="job_id"/>
                        <field name ='location'/>
                        <field name="division_id"/>
                        <field name="section_id"/>
                        <field name ='practise_id'/>
                        <field name ='nominated_on'/>
                        <field name="publish_on"/>
                        <field name="state"/>
                        <field name ='reason'/>
                        <field name="month_name"/>


                        <separator/>
					    <filter string="This Year" domain="[('nominated_on', 'like',context_today().strftime('%Y'))]" 
                                name="nominated_on_date"/>
                        <separator/>
                        <filter string="This Month" domain="[('nominated_on', 'like',context_today().strftime('%Y-%m'))]" name="nominated_on_month"/>
                        <separator/>
                            <filter string="January" domain="[('month','=',1)]" name="january_filter"/>
                            <filter string="February" domain="[('month','=',2)]" name="february_filter"/>
                            <filter string="March" domain="[('month','=',3)]" name="march_filter"/>
                            <filter string="April" domain="[('month','=',4)]" name="april_filter"/>
                            <filter string="May" domain="[('month','=',5)]" name="may_filter"/>
                            <filter string="June" domain="[('month','=',6)]" name="june_filter"/>
                            <filter string="July" domain="[('month','=',7)]" name="july_filter"/>
                            <filter string="August" domain="[('month','=',8)]" name="august_filter"/>
                            <filter string="September" domain="[('month','=',9)]" name="september_filter"/>
                            <filter string="October" domain="[('month','=',10)]" name="october_filter"/>
                            <filter string="November" domain="[('month','=',11)]" name="november_filter"/>
                            <filter string="December" domain="[('month','=',12)]" name="december_filter"/>
                        <separator />
                        <filter string="Nominated On" name="nominated_on" date="nominated_on" />
                        <separator />
                        <filter string="Publish On" name="publish_on" date="publish_on"/>
                        <separator/>

                        <group expand="1" string="Group By">
                            <filter string="Nominee" name="group_by_employee_id" domain="[]" context="{'group_by':'employee_id'}"/>
                            <filter string="Nominated By" name="group_by_nominated_by" domain="[]" context="{'group_by':'nominated_by'}"/>
                            <filter string="Nominated On" name="group_by_nominated_on" date="nominated_on" domain="[]" context="{'group_by':'nominated_on'}"/>
                            <filter string="Year" name="group_by_year" domain="[]" context="{'group_by':'year'}"/>
                            <filter string="Month" name="group_by_month_name"  domain="[]" context="{'group_by':'month_name'}"/>
                            <filter string="State" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        </group> 
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="kw_starlight_report_actions_window">
			<field name="name">Starlight Report</field>
			<field name="res_model">kw_starlight_report</field>
			<field name="view_mode">tree</field>
             <field name="search_view_id" ref="kw_reward_and_recognition.kw_starlight_report_view_report_search_view" />
            <field name="context">{'search_default_nominated_on_date':1,'search_default_nominated_on_month':1,'search_default_group_by_employee_id':1,'create':False,'edit':False,'import':False,}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_starlight_report_tree_view')})]"/>
		</record>
    </data>
</odoo>