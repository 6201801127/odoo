<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    

        <record id="kw_division_config_view_tree" model="ir.ui.view">
            <field name="name">kw_division_config.view.tree</field>
            <field name="model">kw_division_config</field>
            <field name="arch" type="xml">
                <tree duplicate='0'>
                    <field name="name" string='Department Name' groups='kw_reward_and_recognition.rnr_manager'/>
                    <field name="type" groups='kw_reward_and_recognition.rnr_manager'/>
                    <field name="sbu_master_id" groups='kw_reward_and_recognition.rnr_manager' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="nominator_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" groups='kw_reward_and_recognition.rnr_manager'/>
                    <field name="department_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" groups='kw_reward_and_recognition.rnr_manager'/>
                    <field name="reviewer_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' groups='kw_reward_and_recognition.rnr_manager'/>
                    <!-- <field name="award_count" string='Max Award Count' required='1' groups='kw_reward_and_recognition.rnr_manager'/> -->
                </tree>
            </field>
        </record>


        <record id="kw_division_config_view_form" model="ir.ui.view">
            <field name="name">kw_division_config.view.form</field>
            <field name="model">kw_division_config</field>
            <field name="arch" type="xml">
                <form string="Reward And Recognition" duplicate='0'>
                    <sheet>
                        <group>
                                <group>
                                    <field name="type" widget="radio" options="{'horizontal': true}" required='1' groups='kw_reward_and_recognition.rnr_manager'/>
                                    <field name="name" required='1' groups='kw_reward_and_recognition.rnr_manager'/>
                                    <field name="nominator_ids" widget="many2many_tags" required='1' options="{'no_open': True,'no_create':True,'no_edit':True}" groups='kw_reward_and_recognition.rnr_manager'/>
                                    <field name="sbu_master_id" attrs="{'invisible': [('type','!=','sbu')],'required': [('type','=','sbu')]}" options="{'no_open': True,'no_create':True,'no_edit':True}" groups='kw_reward_and_recognition.rnr_manager'/>
                                    <field name="department_ids" domain="[('dept_type.code', '=', 'department')]" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' groups='kw_reward_and_recognition.rnr_manager'>
                                        <tree>
                                            <field name="display_name" string='Department' groups='kw_reward_and_recognition.rnr_manager'/>
                                        </tree>
                                    </field>
                                    <field name="reviewer_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" required='0' groups='kw_reward_and_recognition.rnr_manager'/>
                                    <!-- <field name="award_count" string='Max Award Count' required='1' groups='kw_reward_and_recognition.rnr_manager'/> -->

                                </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="kw_division_config_action" model="ir.actions.act_window">
            <field name="name">Department Configuration</field>
            <field name="res_model">kw_division_config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
             <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_reward_and_recognition.kw_division_config_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_reward_and_recognition.kw_division_config_view_form')})]"/>
        </record>
    </data>
</odoo>