<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rnr_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.rnr</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="STARTLIGHT" string="STARTLIGHT" data-key="kw_reward_and_recognition">
                    <h2>STARTLIGHT</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Date" id="date">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="cc_notify" string="CC Notify" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="cc_notify" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <label for="nomination_reminder" string="Nomination Reminder" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="nomination_reminder" force_save='1'/>
                                        <label for="review_reminder" string="Review Reminder" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="review_reminder" force_save='1'/>
                                        <label for="congratulation_reminder" string="Congratulation Reminder" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="congratulation_reminder" force_save='1'/>
                                        <label for="congratulation_mail_from" string="Congratulation Mail From" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="congratulation_mail_from" force_save='1' placeholder='a@gmail.com'/>
                                        <label for="congratulation_mail_to" string="Congratulation Mail To" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="congratulation_mail_to" force_save='1' placeholder='b@gmail.com'/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="rnr_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_reward_and_recognition'}</field>
    </record>
</odoo>
