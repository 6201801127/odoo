<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_holidays_greetings_tree" model="ir.ui.view">
        <field name="name">kw_hr_holidays_greetings_tree</field>
        <field name="model">hr_holiday_greetings</field>
        <field name="arch" type="xml">
            <tree string="Holiday Greetings">
                <field name="year_id" />
                <field name="holiday"/>
            </tree>
        </field>
    </record>

    <record id="view_holidays_greetings_form" model="ir.ui.view">
        <field name="name">kw_hr_holidays_greetings_form</field>
        <field name="model">hr_holiday_greetings</field>
        <field name="arch" type="xml">
            <form string="Holidays Greetings">
                <sheet>
                <group>
                <field name="year_id"  options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                <field name="holiday" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                </group>
                <group>
                <field name="greeting" />
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_holidays_greetings_search" model="ir.ui.view">
        <field name="name">kw_hr_holidays_greetings_search</field>
        <field name="model">hr_holiday_greetings</field>
        <field name="arch" type="xml">
            <search string="Search Holiday">
                    <field name="year_id" string="Year" />
                    <field name="holiday" string="Holiday" />
               
            </search>
        </field>
    </record>
    
    <record id="open_holidays_greetings_view" model="ir.actions.act_window">
        <field name="name">Holidays Greetings</field>
        <field name="res_model">hr_holiday_greetings</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_holidays_greetings_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_holidays_greetings_form')})]"/>
        </record>


    <menuitem action="open_holidays_greetings_view"
              id="menu_holidays_greetings_view"
              name="Holidays Greetings"
              parent="menu_hr_public_holidays"
              sequence="11"/>
</odoo>