<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--START: Resource calendar form view inheritance -->
            <record id="view_resource_calendar_excluded_public_holidays_form" model="ir.ui.view">
                <field name="name">Shift Master Form View Exclude Public Holidays Inherited</field>
                <field name="model">resource.calendar</field>
                <field name="inherit_id" ref="resource.resource_calendar_form"/>
                <field name="arch" type="xml">
                    
                   <xpath expr="//notebook/page[2]" position="after">
                        <page string="Exclude Branch Holidays" >
                            <field name='excluded_public_holidays_ids' options="{'no_create_edit': True, 'no_create': True}" >
                                <tree >
                                    <field name="name"/>
                                    <field name="date" string="Date" />                                    
                                    <!-- <field name="optional_holiday" string="Optional" /> -->
                                </tree>
                            </field>
                        </page>   
                   </xpath>
                   

                </field>
            </record>

            
            

        <!--END: Resource calendar form view inheritance -->

    </data>
</odoo>    

    