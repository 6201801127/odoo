<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_facereader_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.facereader</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Face Reader" string="Face Reader" data-key="kw_face_reader"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>Face Reader Settings</h2>
                    <div class="row mt16 o_settings_container">

                      <!--   <div class="col-12 col-lg-6 o_setting_box" title="Training URL">
                         
                            <div class="o_setting_right_pane">
                                <label for="kw_face_reader_training_url"  class="col-3 col-lg-3 o_light_label"/>
                                <field name="kw_face_reader_training_url"/>
                            </div>
                        </div> -->

                        <div class="col-12 col-lg-12 o_setting_box" title="Employee Web Service URL">
                           
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Training URL</span>
                                <div class="text-muted">
                                    Set the Training URL
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_face_reader_training_url" string="URL"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_face_reader_training_url"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-lg-12 o_setting_box" title="Face Reader URL">
                           
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Face Reader URL</span>
                                <div class="text-muted">
                                    Set the Face Reader URL
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_face_reader_url" string="URL"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_face_reader_url"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>


                        <div class="col-12 col-lg-12 o_setting_box" title="Employee Model Path">
                        
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"> Employee Model URL</span>
                                <div class="text-muted">
                                    Set the  Employee Model URL
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_face_reader_employee_image_path" string="URL"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_face_reader_employee_image_path"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-lg-12 o_setting_box" title="Unmatched Image Path">
                         
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Unmatched Image Path</span>
                                <div class="text-muted">
                                    Set the Unmatched Image Path
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_face_reader_unmatched_image_path" string="URL"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_face_reader_unmatched_image_path"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>

                         <div class="col-12 col-lg-12 o_setting_box" title="API UR">
                         
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Face Reader API URL</span>
                                <div class="text-muted">
                                    Set the Face Reader API URL
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="kw_face_reader_api_url" string="URL"
                                            class="col-3 col-lg-3 o_light_label"/>
                                        <field name="kw_face_reader_api_url"   required="1"/>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>


                </div>
            </xpath>
        </field>
    </record>



    <record id="kw_facereader_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_face_reader'}</field>
    </record>

   
</odoo>
