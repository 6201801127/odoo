<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_kw_face_training_data_list">
      <field name="name">kw_face_reader list</field>
      <field name="model">kw_face_training_data</field>
      <field name="arch" type="xml">
        <tree default_order="create_date desc">
            <!-- <field name="employee_id"/> -->
            <field name="image_binary" widget="image" class="oe_avatar "/>
        </tree>
      </field>
    </record>


   <record model="ir.ui.view" id="view_kw_face_training_data_form">
        <field name="name">kw_face_training_data form</field>
        <field name="model">kw_face_training_data</field>       
        <field name="arch" type="xml">
            <form string="Training Data">
                <group >
                    <field name="image_name" 
                    readonly="1"
                    />

                     <field name="create_date" 
                    readonly="1"
                    />
                    
                    
                </group>
                <group >
                <!--  -->

                    <field name="image_binary" widget="image"  />

                </group>
            </form>
        </field>
    </record>



    <record id="view_kw_face_training_data_kanban" model="ir.ui.view">
        <field name="name">kw_face_training_data.kanban</field>
        <field name="model">kw_face_training_data</field>
        <field name="arch" type="xml">
          <kanban default_order="create_date desc" class="o_kanban_small_column o_emphasize_colors" >
            <field name="id"/>
            <field name="image_binary"/>
             <field name="image_name"/>
            <templates>
              <t t-name="kanban-box">   

                  <div class="oe_kanban_content oe_kanban_global_click" style="max-width: 1.0em !important;">

                       
                      <field name="image_binary" nolabel="1" widget="image" class="oe_avatar "  style="max-height: 90px; max-width: 60px;"/>


                    </div>             
                  
               
                  
              </t>
              
            </templates>
          </kanban>
        </field>
      </record>	
   

    <!-- actions opening views on models -->
    
    <!-- <record model="ir.actions.act_window" id="kw_face_training_data_action_window">
      <field name="name">kw_face_reader window</field>
      <field name="res_model">kw_face_training_data</field>
      <field name="view_mode">tree,form</field>
    </record> -->
   

    
  </data>
</odoo>