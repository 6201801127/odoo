<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="kw_face_training_employee_data_list">
      <field name="name">kw_face_training_employee_data list</field>
      <field name="model">hr.employee</field>
      <field name="arch" type="xml">
        <tree>
           <field name="name"/>
           <field name="job_id"/>
           <field name="department_id"/>
           <field name="emp_code" />
          <field name="face_model_image_count"/>
        </tree>
      </field>
    </record>


    <record id="search_hr_employee_training_data_view" model="ir.ui.view">
      <field name="name">hr.employee.search</field>
      <field name="model">hr.employee</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Employees"/>
          <field name="department_id"/>
          <field name="job_id" />
          <field name="emp_code" />
        </search>
      </field>
    </record>

    

     <record model="ir.ui.view" id="kw_face_training_employee_data_form_view">
            <field name="name">kw_face_training_employee_data form</field>
            <field name="model">hr.employee</field>
           <!--  <field name="inherit_id" ref="hr.view_employee_form"/> -->
            <field name="arch" type="xml">
                <form string="In Memory Data">


                    <header>

                      <button name="remove_employee_in_memory_data" groups="hr.group_hr_manager,base.group_no_one" string="Remove All In Memory Data" class="oe_highlight " type="object"/>

                    </header>

                    <group >
                      <group >
                        <field name="name" 
                        readonly="1"
                        />
                        <field name="emp_code"  readonly="1"/>
                         
                        </group>
                         <group >
                            <field name="job_id"  readonly="1"/>
                            <field name="department_id"  readonly="1"/>
                            
                          </group>
                    </group>
                    <group >

                     
                        <field name="face_model_image_ids" mode="kanban"  widget="one2many" context="{'default_employee_id': active_id}" />


                    </group>
                </form>
            </field>
        </record>
   
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="action_window_kw_face_training_employee_data">
      <field name="name">In Memory</field>
      <field name="res_model">hr.employee</field>
      <field name="view_mode">tree,form</field> 
      <field name="search_view_id" ref="search_hr_employee_training_data_view"/>
      <field name="domain">
		[
			("face_model_image_ids", "!=",False)			
		]
	</field>
      <!-- <field name="view_id" ref="kw_face_training_employee_data_list"/> -->
      <!-- (5, 0, 0), <field name="views">[ref(kw_face_training_employee_data_list), "tree"], [ref(kw_face_training_employee_data_form_view), "form"]</field> -->

      <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_face_training_employee_data_list')}), (0, 0, {'view_mode': 'form', 'view_id': ref('kw_face_training_employee_data_form_view')})  ]"/>
    </record>
   
    
  </data>
</odoo>