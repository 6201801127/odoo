<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_wall_twitter" name="Twitter Wall Scroller">
        <section class="twitter_wall" data-screen-name="OpenERP" data-limit="15"  >
                <div class="twitter_wall_timeline " />
        </section>
    </template>

   <!-- o_not_editable     <template id="remove_wall_external_snippets" inherit_id="website.external_snippets">
        <xpath expr="//t[@t-install='kw_twitter_wall']" position="replace"/>
    </template> -->

     <template id="kw_twitter_wall_snippet" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <t t-snippet="kw_twitter_wall.s_wall_twitter" t-thumbnail="/website/static/src/img/blocks/twitter_scroll.png"/>
        </xpath>
    </template>

    <template id="kw_twitter_wall_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="wall_twitter" data-selector=".twitter_wall"/>
        </xpath>
    </template>

    <template id="wall_twitter" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/kw_twitter_wall/static/src/scss/website_twitter.scss"/>

            <link rel="stylesheet"  href="/kw_twitter_wall/static/lib/jquery.flipster.min.css"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/kw_twitter_wall/static/lib/jquery.flipster.min.js"/>
            <script type="text/javascript" src="/kw_twitter_wall/static/src/js/website.twitter.animation.js"/>
        </xpath>
    </template>
    <!-- <template id="twitter_wall_editor" inherit_id="website.assets_editor">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/kw_twitter_wall/static/src/js/website.twitter.editor.js"/>
        </xpath>
    </template> -->
</odoo>
