<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="kw_sale.individual_target_plan">
		<div class="container-fluid mt-5">
			<div class="table-responsive">
                <div class="card">
	                <div class="card-body">
	                    <h3 class="text-center mt-2 mb-4">Individual Target Plan</h3>
		                <div class="row">
		                    <div class="col-sm-12">
			                    <div class="row form-group">
			                        <div class="col-sm-4">
                                        <label for="target_fiscal_year" class="mdb-main-label">Fiscal Year:</label>
				                        <select class="form-control" id="target_fiscal_year">
											<option></option>
                                        </select>
                                    </div>
				                    <div class="col-sm-4">
                                        <label for="target_team_name" class="mdb-main-label">Team Name:</label>
				                        <select class="form-control" id="target_team_name">
											<option></option>
                                        </select>
                                    </div>
				                    <div class="col-sm-4">
                                        <label for="target_team_member" class="mdb-main-label">Team Member:</label>
				                        <select class="form-control" id="target_team_member">
											<option></option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>
	                </div>
                </div>
				<div class="card mt-4">
	                <div class="card-body">
						<div id="target_loader">
		                    <h2><center>Loading...</center></h2>
		                </div>
		                <div id="target_loader_no_record" class="o_hidden">
		                    <h2><center>No records found...</center></h2>
		                </div>
		                <div style="width:100%;overflow-x:auto;" id="target_box" class="o_hidden">
			                <form name="form_target_box" id="form_target_box">
						    	<table class="table table-hover table-bordered">
									<tbody id="target_plan_table">

									</tbody>
								</table>
							</form>

                        </div>
	                </div>
                </div>
                <div class="col-sm-12">
                    <button class="btn btn-primary" id="btn_rec_calendar_budget_save">Set Target</button>
                    <button class="btn btn-primary" id="btn_rec_calendar_budget_save">Remove Target</button>
                </div>
            </div>
        </div>
	</t>
</templates>
