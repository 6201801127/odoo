<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="kw_sale.company_target_plan">
		<div class="container-fluid mt-5">
			<div class="table-responsive">
                <div class="card">
	                <div class="card-body">
	                    <h3 class="text-center mt-2 mb-4">Company Target Plan</h3>
		                <div class="row">
		                    <div class="col-sm-12">
			                    <div class="row form-group">
			                        <div class="col-sm-4">
                                        <label for="target_fiscal_year" class="mdb-main-label">Fiscal Year:</label>
				                        <select class="form-control" id="target_fiscal_year">
											<option></option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
	                </div>
                </div>
				<div class="card mt-4">
	                <div class="card-body">
						<div id="target_loader">
		                    <h2><center>Loading...</center></h2>
		                </div>
		                <div id="target_loader_no_record" class="o_hidden">
		                    <h2><center>No records found...</center></h2>
		                </div>
		                <div style="width:100%;overflow-x:auto;" id="company_target_div">
			                <form name="company_target_table" id="company_target_table">
						    	<table class="table table-hover table-bordered">
                                    <thead>
							            <tr>
											<th>Target Type</th>
									        <th>Apr(Base Amount)</th>
											<th>May(Base Amount)</th>
											<th>Jun(Base Amount)</th>
											<th>Jul(Base Amount)</th>
											<th>Aug(Base Amount)</th>
											<th>Sep(Base Amount)</th>
											<th>Oct(Base Amount)</th>
											<th>Nov(Base Amount)</th>
											<th>Dec(Base Amount)</th>
											<th>Jan(Base Amount)</th>
											<th>Feb(Base Amount)</th>
											<th>Mar(Base Amount)</th>
											<th>Total</th>
										</tr>
                                    </thead>
									<tbody id="company_target_body">
								        <tr class="row-0">
                                            <td id="target_type_id">Work Order</td>
                                            <td><input type="text" class="work_base_amount_apr" name="work_apr" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_may" name="work_may" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_jun" name="work_jun" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_jul" name="work_jul" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_aug" name="work_aug" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_sep" name="work_sep" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_oct" name="work_oct" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_nov" name="work_nov" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_dec" name="work_dec" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_jan" name="work_jan" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_feb" name="work_feb" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_mar" name="work_mar" style="width:75px;"/></td>
                                            <td><input type="text" class="work_base_amount_total" name="work_total" style="width:75px;" readonly="readonly"/></td>
                                        </tr>
								        <tr class="row-1">
                                            <td>Billing</td>
                                            <td><input type="text" class="bill_base_amount_apr" name="bill_apr" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_may" name="bill_may" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_jun" name="bill_jun" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_jul" name="bill_jul" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_aug" name="bill_aug" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_sep" name="bill_sep" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_oct" name="bill_oct" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_nov" name="bill_nov" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_dec" name="bill_dec" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_jan" name="bill_jan" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_feb" name="bill_feb" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_mar" name="bill_mar" style="width:75px;"/></td>
                                            <td><input type="text" class="bill_base_amount_total" name="bill_total" style="width:75px;" readonly="readonly"/></td>
                                        </tr>
								        <tr class="row-2">
                                            <td>Collection</td>
                                            <td><input type="text" class="coll_base_amount_apr" name="coll_apr" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_may" name="coll_may" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_jun" name="coll_jun" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_jul" name="coll_jul" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_aug" name="coll_aug" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_sep" name="coll_sep" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_oct" name="coll_oct" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_nov" name="coll_nov" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_dec" name="coll_dec" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_jan" name="coll_jan" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_feb" name="coll_feb" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_mar" name="coll_mar" style="width:75px;"/></td>
                                            <td><input type="text" class="coll_base_amount_total" name="coll_total" style="width:75px;" readonly="readonly"/></td>
                                        </tr>
									</tbody>
								</table>
							</form>
                            <button class="btn btn-primary" id="btn_company_target_save">Submit</button>
                        </div>
	                </div>
                </div>
            </div>
        </div>
	</t>
</templates>
