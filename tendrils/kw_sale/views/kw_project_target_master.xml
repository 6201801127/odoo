<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="kw_sale_target_master_form" model="ir.ui.view">
            <field name="name">kw_sale_target_master.form</field>
            <field name="model">kw_sale_target_master</field>
            <field name="arch" type="xml">
                <form string="Tagging" create='0' edit='0' delete='0'>
                    <group>
                        <group>
                            <field name="team_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="kw_sale_target_master_tree" model="ir.ui.view">
            <field name="name">kw_sale_target_master.tree</field>
            <field name="model">kw_sale_target_master</field>
            <field name="arch" type="xml">
                <tree string="Tagging" delete='0'>
                    <field name="team_id" string='Project Designation'/>
                </tree>
            </field>
        </record>

        <record id="kw_sale_target_master_act_window" model="ir.actions.act_window">
            <field name="name">Resource Tagging</field>
            <field name="res_model">kw_sale_target_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem
                id="kw_sale_target_master_menu"
                name="Sales Target"
                parent="crm.crm_menu_root"
                sequence="4"/>

        <menuitem
                id="kw_sale_indi_target_master_menu"
                name="Individual Target"
                action="action_individual_target"
                parent="kw_sale_target_master_menu"
                sequence="1"/>
        <menuitem
                id="kw_sale_team_target_master_menu"
                name="Team Target"
                action="action_team_target"
                parent="kw_sale_target_master_menu"
                sequence="2"/>
        <menuitem
                id="kw_sale_company_target_master_menu"
                name="Company Target"
                action="action_company_target"
                parent="kw_sale_target_master_menu"
                sequence="3"/>
    </data>
</odoo>
