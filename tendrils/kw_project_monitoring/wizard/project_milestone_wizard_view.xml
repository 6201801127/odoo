<odoo>
    <!-- Wizard Form View -->
    <record id="view_kw_project_milestone_wizard" model="ir.ui.view">
        <field name="name">kw_project_milestone_view_wizard.form</field>
        <field name="model">kw_project_milestone_view_wizard</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                </script>
                <div class="row">
                    <div class="text-center col-sm-12 mx-auto">
                        <h4>Select Project</h4>
                        <p class="h6 font-weight-light text-center text-justify">
                            <field name="project_id" required="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </p>
                        <p class="h6 font-weight-light text-center text-justify">
                            This wizard allows you to select a project and search for associated milestones.
                        </p>
                        <button type="object" name="search_project_data" class="btn-success mr-2" style="float:center;">Search</button>
                        <button string="Cancel" class="btn-danger" special="cancel" style="float:center;"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <!-- Action for the Wizard -->
    <record id="action_kw_project_milestone_wizard" model="ir.actions.act_window">
        <field name="name">Project Milestone Wizard</field>
        <field name="res_model">kw_project_milestone_view_wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
