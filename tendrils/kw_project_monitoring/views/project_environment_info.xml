<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_project_env_info_tree" model="ir.ui.view">
            <field name="name">kw_project_env_info_tree</field>
            <field name="model">kw_project_env_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="project_id"/>
                    <field name="env_detail_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_project_env_info_form" model="ir.ui.view">
            <field name="name">kw_project_env_info_form</field>
            <field name="model">kw_project_env_info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True}"/>
                                <field name="check_project_details" widget='boolean_toggle' attrs="{'invisible': [('project_id', '=',False)]}"/>
                                <field name="project_name" attrs="{'invisible': [('check_project_details', '=',False)]}"/>
                                <field name="project_code" attrs="{'invisible': [('check_project_details', '=',False)]}"/>
                                <!-- <field name="short_code" attrs="{'invisible': [('check_project_details', '=',False)]}"/> -->
                                <!-- <field name="project_type" attrs="{'invisible': [('check_project_details', '=',False)]}"/> -->
                                <field name="project_manager_id" attrs="{'invisible': [('check_project_details', '=',False)]}" options="{'no_open': True,'no_create':True}"/>
                                <field name="account_holder" attrs="{'invisible': [('check_project_details', '=',False)]}" options="{'no_open': True,'no_create':True}"/>

                                <field name="env_detail_ids" attrs="{'invisible': [('project_id', '=',False)]}">
                                    <tree class="customer_tree" editable='top'>
                                        <field name="env_type"/>
                                        <field name="application_server"/>
                                        <field name="database_server"/>
                                        <field name="database_user"/>
                                        <field name="ftp_user"/>
                                        <field name="technology_id" options="{'no_open': True,'no_create':True}"/>
                                        <field name="technology_version"/>
                                        <field name="architecture_id" options="{'no_open': True,'no_create':True}"/>
                                        <field name="ui_id" options="{'no_open': True,'no_create':True}"/>
                                        <field name="ui_version"/>
                                        <field name="database_id" options="{'no_open': True,'no_create':True}"/>
                                        <field name="database_version"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the action -->
        <record id="action_kw_project_env_info" model="ir.actions.act_window">
            <field name="name">Project Enviornment Info</field>
            <field name="res_model">kw_project_env_info</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Please Select Project Name To Add and View Enviroment Details.
                </p>
            </field>
        </record>
    </data>
</odoo>
