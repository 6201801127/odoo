<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add Use case Form View -->
        <record id="add_use_case_master_form" model="ir.ui.view">
            <field name="name">Project use case form</field>
            <field name="model">kw_project_add_use_case_master</field>
            <field name="arch" type="xml">
                <form string="Manage Use Cases">
                    <sheet>
                        <div class="oe_title">
                            <h1 style="color:teal">Manage Use Cases</h1>
                        </div>
                        <group style="background: rgb(192,223,157); background: radial-gradient(circle, rgba(192,223,157,0.9738095067128414) 0%, rgba(255,255,255,1) 97%, rgba(253,254,252,1) 100%);" >
                            <group>
                                <field name="project_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="project_manager_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <!-- <field name="project_id"/> -->
                            </group>
                            <group>
                                <field name="project_short_code"/>
                                <field name="domain" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>          
                        <group>
                            <field name="use_case_ids" options="{'no_open': True,'no_create':True,'no_edit':True}">
                                <tree editable='bottom' class='customer_tree'>
                                    <field name="use_case_code"/>
                                    <field name="activity_name"/>
                                    <field name="use_case_details"/>
                                    <field name="complexity_level"/>
                                    <field name="reusable"/>
                                    <field name="customization_effort"/>
                                    <field name="effective_uc_point"/>
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                    <field name="write_date"/>
                                    <field name="write_uid"/>
                                    <!-- <field name="use_case_id"/> -->
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Add Use Case Tree View -->

        <record model="ir.ui.view" id="add_use_case_master_list">
            <field name="name">Project use cases list</field>
            <field name="model">kw_project_add_use_case_master</field>
            <field name="arch" type="xml">
                <tree import='0' class='customer_tree'>
                    <field name="project_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="project_manager_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="project_id"/>
                    <field name="project_short_code"/>
                    <field name="domain" options="{'no_open': True,'no_create':True,'no_edit':True}"/>

                </tree>
            </field>
        </record>

         <!-- Use Case Master Action -->

        <record id="add_use_cases_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Manage use case</field>
            <field name="res_model">kw_project_add_use_case_master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>


        <!-- Use Case Master Tree View -->

        <record model="ir.ui.view" id="use_case_master_list">
            <field name="name">Project use case list</field>
            <field name="model">kw_project_use_case_master</field>
            <field name="arch" type="xml">
                <tree class='customer_tree'>
                    <field name="domain_name" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="use_case_code"/>
                    <field name="activity_name"/>
                    <field name="use_case_details"/>
                    <field name="complexity_level"/>
                    <field name="reusable"/>
                    <field name="customization_effort"/>
                    <field name="effective_uc_point"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="write_date"/>
                    <field name="write_uid"/>
                    <button name="action_download_excel" type="object" string="Excel Format" class="oe_highlight"/>

                    <!-- <field name="use_case_id"/> -->

                </tree>
            </field>
        </record>

        <!-- Use case master Form View -->
        <record id="use_case_master_form" model="ir.ui.view">
            <field name="name">Project use case details form</field>
            <field name="model">kw_project_use_case_master</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                    <style>
                            .table-container {
                                display: flex;
                                justify-content: space-around;
                                background-color: white;
                                margin-top: 20px;
                            }
                            .use-case-table {
                                width: 100%;
                                border-collapse: collapse;
                                border: 2px solid black;
                            }
                            .use-case-table th, .use-case-table td {
                                border: 1px solid black;
                                padding: 8px;
                                font-family: Arial, sans-serif;
                                text-align: left;
                            }
                            .header-row {
                                background-color: #108fbb;
                                color: white;
                                font-weight: bold;
                            }
                            .use-case-table th {
                                background-color: #108fbb;
                                color: white;
                                font-weight: bold;
                            }
                            .use-case-table td {
                                background-color: #f9f9f9;
                            }
                        </style>

                        <group>
                            <div class="table-container">
                                <table class="use-case-table">
                                    <thead>
                                        <tr class="header-row">
                                            <th>Domain Name</th>
                                            <th>Use Case Code</th>
                                            <th>Activity Name</th>
                                            <th>Use Case Details</th>
                                            <th>Complexity Level</th>
                                            <th>Reusable</th>
                                            <th>Customization Effort</th>
                                            <th>Effective UC Point</th>
                                            <!-- <th>Created On</th>
                                            <th>Created By</th>
                                            <th>Updated On</th>
                                            <th>Updated By</th> -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><field name="domain_name" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="use_case_code" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="activity_name" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="use_case_details" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="complexity_level" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="reusable" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="customization_effort" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="effective_uc_point" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <!-- <td><field name="created_on" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="created_by" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="updated_on" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td>
                                            <td><field name="updated_by" options="{'no_open': True,'no_create':True,'no_edit':True}" /></td> -->
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        

         <!-- Use Case Master Action -->

        <record id="use_case_master_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Use Case Master</field>
            <field name="res_model">kw_project_use_case_master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>

         <!-- Domain Master Tree View -->

        <record model="ir.ui.view" id="domain_master_list">
            <field name="name">Domain list</field>
            <field name="model">kw_domain_master</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom'>
                    <field name="name"/>
                </tree>
            </field>
        </record>

         <!-- Domain Master Action -->

        <record id="domain_master_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Domain Master</field>
            <field name="res_model">kw_domain_master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>

         <!-- Component Master Tree View -->

        <record model="ir.ui.view" id="component_master_list">
            <field name="name">component list</field>
            <field name="model">kw_component_master</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom'>
                    <field name="component"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

         <!-- Component Master Action -->

        <record id="component_master_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Component Master</field>
            <field name="res_model">kw_component_master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>

         <!-- Component Type Master Tree View -->

        <record model="ir.ui.view" id="component_type_master_list">
            <field name="name">Component Type List</field>
            <field name="model">kw_component_type_master</field>
            <field name="arch" type="xml">
                <tree import='0' editable='top'>
                    <field name="component_name"/>
                    <field name="component_code"/>
                    <field name="component_amount"/>
                </tree>
            </field>
        </record>

         <!-- Component Type Master Master Action -->

        <record id="component_type_master_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Componenet Type Master</field>
            <field name="res_model">kw_component_type_master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>
    </data>
</odoo>
