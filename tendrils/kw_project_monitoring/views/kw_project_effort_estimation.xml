<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="view_effort_estimation_form" model="ir.ui.view">
    <field name="name">kw_project_effort_estimation.form</field>
    <field name="model">kw_project_effort_estimation</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group style="background: rgb(192,223,157); background: radial-gradient(circle, rgba(192,223,157,0.9738095067128414) 0%, rgba(255,255,255,1) 97%, rgba(253,254,252,1) 100%);">
                    <field name="project_id" required='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="project_manager_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="project_ref_code"/>
                </group>
                <group>
                    <notebook >
                        <page string="View Estimation">
                            <div style="background-color:#48ae7070;; padding: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 100%; text-align: center; font-weight: bold;">
                                            <span class="oe_title" style="font-weight: bold;font-size: large;color: teal;">Technical Complexity Factors</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <field name="estimation_total_id">
                                <tree class="customer_tree" editable='bottom' delete='false' create='false'>
                                    <field name="name" force_save='1' readonly='1'/>
                                    <field name="description" force_save='1' readonly='1'/>
                                    <field name="weight" force_save='1' readonly='1'/>
                                    <field name="perceived_complexity"/>
                                    <field name="calculated_factor" readonly='1'/>
                                </tree>
                            </field>
                            <div style="margin-top: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Total Calculated Factor</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="total_calculated_factor" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div style="background-color:#48ae7070;; padding: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 100%; text-align: center;font-weight: bold;">
                                            <span class="oe_title" style="font-weight: bold;font-size: large; color:teal;">Enviromental Complexity Factors</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <field name="enviromental_complexity_id">
                                <tree class="customer_tree" editable='bottom' delete='false' create='false'>
                                    <field name="name" force_save='1' readonly='1'/>
                                    <field name="description" force_save='1' readonly='1'/>
                                    <field name="weight" force_save='1' readonly='1'/>
                                    <field name="perceived_complexity"/>
                                    <field name="calculated_factor" readonly='1'/>
                                </tree>
                            </field>
                            <div style="margin-top: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Total Calculated Factor</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="total_calculated_factor1" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div style="background-color:#48ae7070;; padding: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 100%; text-align: center;font-weight: bold;">
                                            <span class="oe_title" style="font-weight: bold;font-size: large; color:teal;">Unadjusted Use Case Weight (UUCW)</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <field name="unadjusted_use_case_id">
                                <tree class="customer_tree" editable='bottom' delete='false' create='false'>
                                    <field name="name"  force_save='1' readonly='1'/>
                                    <field name="description" force_save='1' readonly='1'/>
                                    <field name="weight" force_save='1' readonly='1'/>
                                    <field name="no_of_use_cases" force_save='1' readonly='1'/>
                                    <field name="standard" readonly='1'/>
                                    <field name="effective" readonly='1'/>
                                </tree>
                            </field>
                            <div style="margin-top: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Total UUCW (Effective)</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="total_effective" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                             <div style="background-color:#48ae7070;; padding: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 100%; text-align: center;font-weight: bold;">
                                            <span class="oe_title" style="font-weight: bold;font-size: large; color:teal;">Unadjusted Actor Weight (UAW)</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <field name="unadjusted_actor_id">
                                <tree class="customer_tree" editable='bottom' delete='false' create='false'>
                                    <field name="name" force_save='1' readonly='1'/>
                                    <field name="description" force_save='1' readonly='1'/>
                                    <field name="weight" force_save='1' readonly='1'/>
                                    <field name="no_of_actor"/>
                                    <field name="result" readonly='1'/>
                                </tree>
                            </field>
                            <div style="margin-top: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Total UAW</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="total_actor_weight" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div>
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">TCF (0.6 + (.01*Total Factor))</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="toal_tcf" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">ECF (1.4 + (-0.03*Total Factor))</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="toal_ecf" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 77%;"></td>
                                        <td style="width: 18%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Total UUCP (Total UUCW + Total UAW)</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="total_uucp" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 80%;"></td>
                                        <td style="width: 15%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Total AUCP (TCF * ECF * UUCP)</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="total_aucp" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 72%;"></td>
                                        <td style="width: 23%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Productivity Factor(PF) (in Hour Per Use Case Point)</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="productivity_factor" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 72%;"></td>
                                        <td style="width: 23%; text-align: center;">
                                            <span class="oe_title" style="font-weight: bold; color: #333;">Estimated Effort (TCF * ECF * UUCP * PF)( in Hrs)</span>
                                        </td>
                                        <td style="width: 5%; text-align: center;">
                                            <div>
                                                <field name="estimated_effort" readonly="1" 
                                                       style="font-weight: bold; color: teal; font-size: 18px;"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <!-- <footer>
                                <center>
                                    <button name="update_effort_estimation" string="Update Effort Estimation" type="object"
                                            class="btn-success ml-1"/>
                                    <button name="update_baseline" string="Update Baseline" type="object" class="oe_highlight ml-1"/>
                                </center>
                            </footer> -->
                        </page>	
                        <page string='View Baseline'>
                            <field name="estimation_baseline_id">
                                <tree class="customer_tree" delete='false' create='false'>
                                    <!-- <field name="baseline_count"/> -->
                                    <field name="tcf_count"/>
                                    <field name="ecf_count"/>
                                    <field name="uucw_count"/>
                                    <field name="uaw_count"/>
                                    <field name="estimated_effort"/>
                                    <field name="modified_by"/>
                                    <field name="modified_on"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </group>
            </sheet>
        </form>
    </field>
</record>


    <record id="view_effort_estimation_tree" model="ir.ui.view">
        <field name="name">kw_project_effort_estimation.tree</field>
        <field name="model">kw_project_effort_estimation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="project_manager_id"/>
                <field name="project_ref_code"/>
                <field name="total_uucp"/>
                <field name="estimated_effort"/>

            </tree>
        </field>
    </record>

    <record id="action_effort_estimation_total" model="ir.actions.act_window">
        <field name="name">Effort Estimation</field>
        <field name="res_model">kw_project_effort_estimation</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
