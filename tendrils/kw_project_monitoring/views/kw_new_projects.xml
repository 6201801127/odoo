<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tag Project Manager Wizard Form View-->
        <record id="pm_tag_wizard_view_form" model="ir.ui.view">
            <field name="name">tag_project_manager_wizard.view.form</field>
            <field name="model">tag_project_manager_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <style>
                            .table-container {
                                display: flex;
                                justify-content: space-around;
                                background-color: white;
                                margin-top: 20px;
                            }
                            .use-case-table {
                                width: 100%;
                                border-collapse: collapse;
                                border: 2px solid black;
                            }
                            .use-case-table th, .use-case-table td {
                                border: 1px solid black;
                                padding: 8px;
                                font-family: Arial, sans-serif;
                                text-align: left;
                            }
                            .header-row {
                                background-color: #108fbb;
                                color: white;
                                font-weight: bold;
                            }
                            .use-case-table th {
                                background-color: #108fbb;
                                color: white;
                                font-weight: bold;
                            }
                            .use-case-table td {
                                background-color: #f9f9f9;
                            }
                        </style>
                        <b>
                            <span class="text-black-bold"><u>Primary Workorder Details</u></span>
                        </b>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="workorder_name"/>
                                <field name="account_holder_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="reviewer_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                            <group>
                                <field name="workoder_code"/>
                                <field name="client_name"/>
                                <!-- <field name="client_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/> -->
                                <field name="workorder_date"/>
                            </group>
                        </group>
                        <b>
                            <span class="text-black-bold"><u>Work Order Component Details</u></span>
                        </b>
                        <group>
                            <div class="table-container">
                                <table class="use-case-table">
                                    <thead>
                                        <tr class="header-row">
                                            <th>Select</th>
                                            <th>Sl#</th>
                                            <th>Work Order Name</th>
                                            <th>Head Name</th>
                                            <th>Sub-Head Name</th>
                                            <th>Allocated Cost</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><field name="select_bool"/></td>
                                            <td><field name="sl_no" readonly="1" /></td>
                                            <td><field name="workorder_name" readonly="1" /></td>
                                            <td><field name="acc_head_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1" /></td>
                                            <td><field name="acc_sub_head_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1" /></td>
                                            <td><field name="allocated_budget" readonly="1" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </group>
                        <group>
                            <field name="project_type_id"/>
                            <field name="allocated_budget"/>
                            <field name="total_budget" readonly="0"/>
                            <field name="select_pm" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="confirm_project_details" type="object" string="Tag PM" class="btn-success" />
                            <button name="reset_project_details" type="object" string="Reset" class="btn-danger ml-5" />
                        </center>
                    </footer>
                </form>
            </field>
        </record>
        

         <!-- New Project Form View -->

        <record id="kw_new_projects_form_view" model="ir.ui.view">
            <field name="name">New Projects form</field>
            <field name="model">kw_project_monitoring_new_projects</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="order_type"/>
                                <field name="fy_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="project_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page string="Projects">
                                    <field name="project_ids">
                                        <tree class="customer_tree" create="false">
                                            <field name="sl_no"/>
                                            <field name="wo_code"/>
                                            <field name="wo_name"/>
                                            <field name="client_name"/>
                                            <field name="project_id"/>
                                            <!-- <field name="module_id"/> -->
                                            <field name="wo_cost" widget="monetary"/>
                                            <field name="wo_issue_date"/>
                                            <field name="account_holder_id"/>
                                            <field name="reviewer_id"/>
                                            <field name="lead_id"/>
                                            <button name="tag_pm_to_project" string="Assign PM" type="object" class="oe_highlight" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--New Project Action -->

        <record id="kw_new_projects_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">New Projects</field>
            <field name="res_model">kw_project_monitoring_new_projects</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>

        <!-- Manage My Project Form View -->
        <record id="pm_project_management_form" model="ir.ui.view">
            <field name="name">Manage My Project form</field>
            <field name="model">pm_project_management</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                        <div class="oe-tittle">
                            <h1 style="color:#108fbb">
							Work Order Details
                            </h1>
                        </div>
                        <group style="background-color: rgb(180, 200, 220);">
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="workorder_name"/>
                                <field name="workoder_code"/>
                                <field name="client_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="account_holder_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="reviewer_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="workorder_date"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="short_code"/>
                                <field name="ppb_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="schedule_start_date"/>
                            </group>
                            <group>
                                <field name="life_cycle_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="schedule_end_date"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Manage My Project Tree View -->

        <record model="ir.ui.view" id="manage_my_project_list">
            <field name="name">Manage My Project</field>
            <field name="model">pm_project_management</field>
            <field name="arch" type="xml">
                <tree import='0' create='0' delete='0'>
                    <field name="project_id"/>
                    <field name="workorder_name"/>
                    <field name="workoder_code"/>
                    <field name="client_id"/>
                    <field name="account_holder_id"/>
                    <field name="reviewer_id"/>
                    <field name="workorder_date"/>
                    <button name="pm_project_take_action" string="Take Action" type="object" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <!--Manage My Project Action -->

        <record id="pm_project_management_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Manage My Project</field>
            <field name="res_model">pm_project_management</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="domain">[('project_id.emp_id','=',uid)]</field> -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('manage_my_project_list')})]"/>
            <field name='context'>{'create':0,'delete':0}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>

        
         <!-- Manage Activity Form View -->
         <record id="manage_project_activity_master_form" model="ir.ui.view">
            <field name="name">Project Activity form</field>
            <field name="model">kw_project_activity_master</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                        <div class="oe-tittle">
                            <h1 style="color:#108fbb">
							Activity Details
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="life_cycle_id"/>
                                <field name="life_cycle_info"/>
                                <field name="activity_name"/>
                                <field name="activity_description"/>
                            </group>
                            <group>
                                <field name="module_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="activity_leader_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="plan_start_date"/>
                                <field name="plan_end_date"/>
                                <field name="effort_hour"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Manage Activity Tree View -->

        <record model="ir.ui.view" id="manage_project_activity_master_list">
            <field name="name">Project Activity list</field>
            <field name="model">kw_project_activity_master</field>
            <field name="arch" type="xml">
                <tree import='0'>
                    <field name="project_id"/>
                    <field name="life_cycle_id"/>
                    <field name="activity_name"/>
                    <field name="plan_start_date"/>
                    <field name="plan_end_date"/>
                    <field name="effort_hour"/>
                </tree>
            </field>
        </record>

         <!-- Manage Activity Action -->

        <record id="manage_project_activity_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project Activity</field>
            <field name="res_model">kw_project_activity_master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record found...
                </p>
            </field>
        </record>

    </data>
</odoo>
