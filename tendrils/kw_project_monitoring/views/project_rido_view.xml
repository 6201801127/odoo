<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Risk Log Tree View -->

        <record id="view_project_risk_log_tree" model="ir.ui.view">
            <field name="name">project_risk_log_tree</field>
            <field name="model">project_risk_log</field>
            <field name="arch" type="xml">
                <tree string="Project Risk Log">
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <!-- Risk Log Form View -->

        <record id="view_project_risk_log_form" model="ir.ui.view">
            <field name="name">project_risk_log_form</field>
            <field name="model">project_risk_log</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True}"/>
                                <field name="risk_date"/>
                                <field name="risk_name"/>
                                <field name="risk_category" options="{'no_open': True,'no_create':True}"/>
                                <field name="risk_description" />
                                <field name="risk_impact"/>
                                <field name="probability"/>
                                <field name="impact"/>
                                <field name="detectibility"/>
                                <field name="migration_plan"/>
                                <field name="migration_plan_due_date"/>
                                <field name="contingency_plan"/>
                                <field name="contingency_plan_due_date"/>
                                <field name="ontingency_plan_when"/>
                                <field name="responsible_person" options="{'no_open': True,'no_create':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Risk Log Action View -->

        <record id="action_project_risk_log" model="ir.actions.act_window">
            <field name="name">Risk Log</field>
            <field name="res_model">project_risk_log</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Records Found.
                </p>
            </field>
        </record>


        <!-- Issue Log Tree View -->

        <record id="view_project_issue_log_tree" model="ir.ui.view">
            <field name="name">project_issue_log_tree</field>
            <field name="model">project_issue_log</field>
            <field name="arch" type="xml">
                <tree string="Project Issue Log">
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <!-- Issue Log Form View -->

        <record id="view_project_issue_log_form" model="ir.ui.view">
            <field name="name">project_issue_log_form</field>
            <field name="model">project_issue_log</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True}"/>
                                <field name="issue_type" widget="radio" options="{'horizontal': True}"/>
                                <field name="risk_name" attrs="{'invisible':[('issue_type','=','new')],'required':[('issue_type','!=','new')]}" options="{'no_open': True,'no_create':True}"/>
                                <field name="issue_date"/>
                                <field name="reported_by" options="{'no_open': True,'no_create':True}"/>
                                <field name="issue_description" />
                                <field name="project_impact"/>
                                <field name="action_plan"/>
                                <field name="responsible_person" options="{'no_open': True,'no_create':True}"/>
                                <field name="escalate_to" options="{'no_open': True,'no_create':True}"/>
                                <field name="plan_closer_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Issue Log Action View -->

        <record id="action_project_issue_log" model="ir.actions.act_window">
            <field name="name">Issue Log</field>
            <field name="res_model">project_issue_log</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Records Found.
                </p>
            </field>
        </record>

        <!-- Dependency Log Tree View -->

        <record id="view_project_dependency_log_tree" model="ir.ui.view">
            <field name="name">project_dependency_log_tree</field>
            <field name="model">project_dependency_log</field>
            <field name="arch" type="xml">
                <tree string="Project Dependency Log">
                    <field name="project_id"/>
                    <field name="dependency_type"/>
                    <field name="critical"/>
                </tree>
            </field>
        </record>

        <!-- Dependency Log Form View -->

        <record id="view_project_dependency_log_form" model="ir.ui.view">
            <field name="name">project_dependency_log_form</field>
            <field name="model">project_dependency_log</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True}"/>
                                <field name="raise_date"/>
                                <field name="dependency_description"/>
                                <field name="dependency_type"/>
                                <field name="deliverables" />
                                <field name="delivery_date"/>
                                <field name="critical"/>
                                <field name="stake_holder_name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Dependency Log Action View -->

        <record id="action_project_dependency_log" model="ir.actions.act_window">
            <field name="name">Dependency Log</field>
            <field name="res_model">project_dependency_log</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Records Found.
                </p>
            </field>
        </record>

        <!-- Opportunity Log Tree View -->

        <record id="view_project_opportunity_log_tree" model="ir.ui.view">
            <field name="name">project_opportunity_log_tree</field>
            <field name="model">project_opportunity_log</field>
            <field name="arch" type="xml">
                <tree string="Project Opportunity Log">
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <!-- Opportunity Log Form View -->

        <record id="view_project_opportunity_log_form" model="ir.ui.view">
            <field name="name">project_opportunity_log_form</field>
            <field name="model">project_opportunity_log</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True}"/>
                                <field name="enterd_date"/>
                                <field name="opportunity_name"/>
                                <field name="catagory"/>
                                <field name="opportunity_description" />
                                <field name="impact"/>
                                <field name="response_trategy"/>
                                <field name="probability"/>
                                <field name="select_impact" />
                                <field name="detectibility"/>
                                <field name="realization_plan"/>
                                <field name="responsible_person" options="{'no_open': True,'no_create':True}"/>
                                <field name="actions" />
                                <field name="contingency_plan"/>
                                <field name="contingency_plan_when"/>
                                <field name="contingency_responsible_person" options="{'no_open': True,'no_create':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- opportunity Log Action View -->

        <record id="action_project_opportunity_log" model="ir.actions.act_window">
            <field name="name">Opportunity Log</field>
            <field name="res_model">project_opportunity_log</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Records Found.
                </p>
            </field>
        </record>

        <!-- Risk Log Reprt Filterd  -->
        
        <record id="filtered_risk_log_wizard_view_form" model="ir.ui.view">
            <field name="name">filtered_risk_log_wizard.view.form</field>
            <field name="model">filtered_risk_log_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                            <group>
                                <field name="risk_category" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button string="Risk Report" type="object" name="get_filtered_risk_log" class="btn-primary"/>
                            <button string="Cancel" class="btn-danger ml-5" special="cancel"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_filtered_risk_log_wizard" model="ir.actions.act_window">
            <field name="name">Filter Risk Log Report</field>
            <field name="res_model">filtered_risk_log_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Issue Log Reprt Filterd  -->

        <record id="filtered_issue_log_wizard_view_form" model="ir.ui.view">
            <field name="name">filtered_risk_log_wizard.view.form</field>
            <field name="model">filtered_issue_log_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                            <group>
                                <field name="issue_type" widget="radio" options="{'horizontal': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button string="Issue Report" type="object" name="get_filtered_issue_log" class="btn-primary"/>
                            <button string="Cancel" class="btn-danger ml-5" special="cancel"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>
        <record id="filtered_issue_log_wizard_action" model="ir.actions.act_window">
            <field name="name">Filter Issue Log Report</field>
            <field name="res_model">filtered_issue_log_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Dependency Filterd Log Report -->

        <record id="filtered_dependency_log_wizard_view_form" model="ir.ui.view">
            <field name="name">filtered_risk_log_wizard.view.form</field>
            <field name="model">filtered_dependency_log_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                            <group>
                                <field name="dependency_type"/>
                                <field name="critical"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button string="Dependency Report" type="object" name="get_filtered_dependency_log" class="btn-primary"/>
                            <button string="Cancel" class="btn-danger ml-5" special="cancel"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>
        <record id="filtered_dependency_log_wizard_action" model="ir.actions.act_window">
            <field name="name">Filter Dependency Log Report</field>
            <field name="res_model">filtered_dependency_log_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Opportunity Filtered Log Report -->

        <record id="filtered_opportunity_log_wizard_view_form" model="ir.ui.view">
            <field name="name">filtered_risk_log_wizard.view.form</field>
            <field name="model">filtered_opportunity_log_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="catagory"/>
                            </group>
                            <group>
                                <field name="probability"/>
                                <field name="select_impact"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button string="Opportunity Report" type="object" name="get_filtered_opportunity_log" class="btn-primary"/>
                            <button string="Cancel" class="btn-danger ml-5" special="cancel"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>
        <record id="filtered_opportunity_log_wizard_action" model="ir.actions.act_window">
            <field name="name">Filter Opportunity Log Report</field>
            <field name="res_model">filtered_opportunity_log_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</odoo>
