<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_warm_lead_form_view" model="ir.ui.view">
            <field name="name">Lead Form View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stage_name" invisible="1" />
                        <button name="request_for_service" type="object" attrs="{'invisible':[('stage_name','=','lead_added')]}" class="oe_highlight" string="Request for Service" groups="kw_sales_monitoring.group_presales_lead"/>
                        <button name="apply_lac" type="object" attrs="{'invisible':['|',('apply_lac_bool', '=', True),('stage_name','=','lead_added')]}" class="oe_highlight" string="Apply LAC" groups="kw_sales_monitoring.group_presales_lead"/>
                        <button name="re_assign" type="object" attrs="{'invisible':[('stage_name','=','lead_added')]}" class="oe_highlight" string="Re-Assign" groups="kw_sales_monitoring.group_sm_sales"/>
                        <button name="drop_the_lead" type="object" attrs="{'invisible':['|',('drop_lead_bool','=',True),('stage_name','=','lead_added')]}" class="oe_highlight" string="Drop the lead" groups="kw_sales_monitoring.group_sm_sales" />
                    </header>
                    <sheet>
                        <div class="row">
                            <div class="col-12" >
                                <label for="name" class="oe_edit_only" string="Lead Name"/>
                                <h1><field name="name" placeholder="Lead Name"/> <span attrs="{'invisible':[('id','=',False)]}">
                                    (code <field name="code" style="color:#108fbb;font-weight:bold" nolabel="1" readonly="1"/>)
                                    </span>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group string="Basic Lead Info">
                                <field name="company_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"  string="CSM Subsidiary/Company"/>
                                <separator />
                                <field name="apply_lac_bool" invisible="1"/>
                                <field name="drop_lead_bool" invisible="1"/>
                                <field name="source_id" string="Lead Source" options="{'no_create': True, 'no_delete': True, 'no_open': True, 'no_update': True}" required="1" />
                                <field name="evalution_method_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" />
                                <field name="funding_agenecy_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" />
                                <field name="is_ref_tor_eoi_published" string="Is the RFP/TOR/EOI published?" />
                                <field name="approximate_delivery_timeline" required="1"/>
                            </group>
                            <group string="Client Details" >
                                <field name="partner_id" string="Client Name" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                                <field name="client_type" string="Client Type" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                                <field name="country_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                                <field name="state_id" string="State and UT" options="{'no_create_edit': True,'no_open':True,'no_create':True}" required="1"/>
                            </group>
                        </group>
                        <group string="Project Details">
                            <group>
                                <field name="project_detail_ids">
                                    <tree editable="1" delete="1">
                                        <field name="line_of_business_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                                        <field name="domain_offering_service_line_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                                        <field name="solution_service_line_id" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="high_level_scope_summary" required="1" />
                                <field name="developmen_is_required" widget="radio" string="Delivery Approach" options="{'horizontal': true}" required="1"/>
                                <field name="technology_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_edit': True}" required="1"/>
                            </group>
                        </group>
                        <group string="Commercial Info">
                            <group>
                                <field name="procurement_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" />
                                <field name="pre_bid_date" string="Prebid Meeting Date" />
                                <field name="pre_bid_time" string="Prebid Meeting Time" />
                            </group>
                            <group>
                                <field name="estimate_lead_value" />
                                <field name="lead_currency_id" string="Currency Type"
                                    options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                                <field name="exchange_rate_to_inr" />
                                <field name="value_in_inr" readonly="1" />
                            </group>
                        </group>
                        <group>
                            <table class="table table-bordered">
                                <tr>
                                    <th style="background-color: #108fbb; color: white;padding-right: 20px;">Revenue Breakup Category (100
                                        %)</th>
                                    <th style="background-color: #108fbb; color: white;padding-right: 20px;">A: Software Development,
                                        Operation and Maintenance, Consultancy</th>
                                    <th style="background-color: #108fbb; color: white;padding-right: 20px;">B: Resource Deployment</th>
                                    <th style="background-color: #108fbb; color: white;padding-right: 20px;">C: Ancillary Services</th>
                                    <th style="background-color: #108fbb; color: white;padding-right: 20px;">D: Implementation, Supply,
                                        Maintenance</th>
                                </tr>
                                <tr>
                                    <td style="background-color: #ddd; font-weight: bold;">Percentage</td>
                                    <td style="background-color: #ddd">
                                        <field name="revenue_breakup_a" required="1"/>
                                    </td>
                                    <td style="background-color: #ddd">
                                        <field name="revenue_breakup_b" required="1"/>
                                    </td>
                                    <td style="background-color: #ddd">
                                        <field name="revenue_breakup_c" required="1"/>
                                    </td>
                                    <td style="background-color: #ddd">
                                        <field name="revenue_breakup_d" />
                                    </td>
                                </tr>
                            </table>
                        </group>
                        <group>
                            <group string="Document Upload">
                                <field name="document_ids">
                                    <tree editable="bottom" delete="1">
                                        <field name="doc_name_selection" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" />
                                        <field name="upload_filename" invisible="1" />
                                        <field name="upload_file" filename="upload_filename" widget="FieldBinary" string="Upload File" />
                                    </tree>
                                </field>
                            </group>
                            <group string="Contact Info (Client Nodal Officer)">
                                <field name="nodal_officer_id" string="Nodal Officer Name"  domain="[('parent_id','=',partner_id)]" options="{'no_create': True, 'no_delete': True, 'no_open': True, 'no_update': True}" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                                <field name="nodal_officer_name" readonly="0" required="1"/>
                                <field name="nodal_officer_designation" readonly="0" required="1"/>
                                <field name="nodal_officer_mobile_no" readonly="0" />
                                <field name="nodal_officer_email_address" readonly="0" />
                            </group>
                        </group>
                        <group>
                            <group string="Account Holder">
                                <field name="account_holder_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" readonly="1"/>
                                <field name="department_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" readonly="1"/>
                                <field name="division_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" readonly="1"/>
                                <field name="section_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                
                </form>
            </field>
        </record>
        
        <record id="kw_warm_lead_tree_view" model="ir.ui.view">
            <field name="name">Lead Tree View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree class="lead_tree_view">
                    <field name="code" class="code"/>
                    <field name="name" string="Lead Name"/>
                    <field name="partner_id" />
                    <field name="state_id" />
                    <field name="country_id" />
                    <field name="create_date" />
                    <field name="source_id" />
                    <field name="evalution_method_id" />
                    <field name="account_holder_id" string = "Account Holder"/>
                    <field name="stage_id" />
                </tree>
            </field>
        </record>
    
        
        <record model="ir.actions.act_window" id="warm_lead_action_window">
            <field name="name">Warm Lead</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_warm_lead_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_warm_lead_form_view')})]"/>
            <field name="domain">[('stage_id.code','not in',['unattended','cr_applied'])]</field>
        
        </record>

        <record id="drop_the_lead_view" model="ir.ui.view">
            <field name="name">Drop Lead Form View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="state_id" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="country_id" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>    
                                <field name="name" readonly = "1" string = "Lead Name"/>    
                                <field name="partner_id" string = "Client Name" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>   
                                <field name="lead_remarks" required="1"/> 
                                
                            </group>
                        </group>
                        <footer>
                            <button name="drop_lead" type="object" class="oe_highlight" string="Drop The Lead" confirm = "Are you sure you want to Drop the lead?"/>
                            <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>

                        </footer>
                       
                    </sheet>
                </form>
            </field>
        </record>

        <record id="lead_reassign_view" model="ir.ui.view">
            <field name="name">Lead Reassign Form View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly = "1" string = "Lead Name"/>    
                                <field name="country_id" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>    
                                <field name="csg_head_dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>   
                            </group>
                            <group>
                                <field name="source_id" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}" string = "Lead Source"/>    
                                <field name="partner_id" string = "Client Name" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>   
                                <field name="csg_member_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>   
                            </group>
                        </group>
                        <footer>
                            <button name="lead_reassign" type="object" class="oe_highlight" string="ReAssign"/>
                            <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                        </footer>
                       
                    </sheet>
                </form>
            </field>
          </record>

        <record id="request_for_service_view" model="ir.ui.view">
            <field name="name">Request For Service Form View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <sheet>
                        <div class="row">
                            <div class="col-12" >
                                <h3>Lead Name: <field name="name" placeholder="Lead Name" readonly="1" no_label="1"/> <span attrs="{'invisible':[('id','=',False)]}">
                                    (Lead Code: <field name="code" style="color:#108fbb;font-weight:bold" nolabel="1" readonly="1"/>)
                                    </span>
                                </h3>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="state_id" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}" string ="Lead State"/>   
                                <field name="country_id" readonly = "1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>    
                            </group>
                            <group>
                                <field name="request_department_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="request_service_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                        <footer>
                            <button name="request_for_service_btn" type="object" class="oe_highlight" string="Submit"/>
                            <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                        </footer>
                       
                    </sheet>
                </form>
            </field>
          </record>
    </data>
    
</odoo>