<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pac_apporve_form_view" model="ir.ui.view">
            <field name="name">PAC Approve Form View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stage_name" invisible="1" />
                        <button name="action_withdraw" type="object" class="oe_highlight" string="Withdraw" groups="kw_sales_monitoring.group_sm_sbu_head "/>
                    </header>
                    <sheet>
                        <div class="row">
                            <div class="col-12" >
                                <label for="name" class="oe_edit_only" string="Lead Name"/>
                                <h1><field name="name" placeholder="Lead Name"/> <span attrs="{'invisible':[('id','=',False)]}">
                                    (code <field name="code" style="color:#108fbb;font-weight:bold" nolabel="1" readonly="1"/>)
                                    </span>
                                </h1>
                            </div>
                           
                        </div>
                        <group>
                            <group string="Client Details" >
                                <field name="country_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" readonly="1"/>
                                <field name="state_id" string="State and UT" options="{'no_create_edit': True,'no_open':True,'no_create':True}" readonly="1"/>
                                <field name="partner_id" required="1" string="Client Name" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" readonly="1"/>
                            </group>
                            <group string="Project Details">
                                <field name="high_level_scope_summary" />
                                <field name="approximate_delivery_timeline"  required="1"/>
                            </group>
                        </group>
                        <group string="Commercial Info">
                            <group>
                                <field name="procurement_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                            </group>
                            <group>
                                <field name="tentative_order_date" required="1"/>
                                <field name="lead_currency_id" string="Currency Type"
                                    options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                            </group>
                        </group>
                        <group>
                            <group string="Contact Info (Client Nodal Officer)">
                                <field name="nodal_officer_id" string="Nodal Officer Name" domain="[('parent_id', '=', partner_id)]" options="{'no_create': True, 'no_delete': True, 'no_open': True, 'no_update': True}" attrs="{'invisible': [('partner_id', '=', False)]}"/>                                
                                <field name="nodal_officer_name" string="Enter Name"/>
                                <field name="nodal_officer_designation" required="1"/>
                                <field name="nodal_officer_mobile_no" required="1"/>
                                <field name="nodal_officer_email_address" required="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Document Upload">
                                <field name="document_ids">
                                    <tree editable="bottom" delete="1">
                                        <field name="doc_name_selection" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                                        <field name="upload_filename" invisible="1" />
                                        <field name="upload_file" filename="upload_filename" widget="FieldBinary" string="Upload File" />
                                    </tree>
                                </field>
                            </group>
                            <group string="Account Holder">
                                <field name="department_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="division_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="section_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="account_holder_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Reviewer">
                                <field name="reviewer_id" string = "Project Reviewer" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                            </group>
                            <group string="Remark">
                                <field name="pac_approve_remark" string = "Enter Remark" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pac_view_tree" model="ir.ui.view">
            <field name="name">PAC Tree View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree class="lead_tree_view">
                    <field name="code" class="code" string="Opp Code"/>
                    <field name="state_id" string="Country|State"/>
                    <field name="partner_id" string="Client" />
                    <field name="name" string="Opportunity Name" />
                    <field name="lead_currency_id" string = "Currency"/>
                    <field name="value_in_inr" />
                    <field name="create_date" string = "Creation Date"/>
                    <field name="account_holder_id" string = "Account Holder"/>
                    <field name="source_id" />
                    <button name="take_action_pac" string="Take Action" type="object" class="text-black" icon="fa-paper-plane text-success" groups="kw_sales_monitoring.group_sm_pac_head"/>
                </tree>
            </field>
        </record>

        <record id="pac_view_form" model="ir.ui.view">
            <field name="name">Lead Form View</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="row">
                            <div class="col-12">
                                <label for="name" class="oe_edit_only" string="Lead Name"/>
                                <h1><field name="name" placeholder="Lead Name" readonly="1"/> <span attrs="{'invisible':[('id','=',False)]}">
                                    (code <field name="code" style="color:#108fbb;font-weight:bold" nolabel="1" readonly="1"/>)
                                    </span>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group string="Client Details" >
                                <field name="partner_id" required="1" string="Client Name" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" />
                                <field name="client_type" string="Client Type" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" />
                                <field name="country_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}" />
                                <field name="state_id" string="State and UT" options="{'no_create_edit': True,'no_open':True,'no_create':True}" />
                            </group>
                            <group string="Project Details">
                                <field name="project_detail_ids">
                                    <tree editable="1" delete="1">
                                        <field name="line_of_business_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                                        <field name="domain_offering_service_line_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                                        <field name="solution_service_line_id" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                    </tree>
                                </field>
                            </group>
                            
                            <separator string="Commercial Info" colspan="4" />
                                
                            <group>
                                <field name="procurement_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="tender_piblising_date"/>
                            </group>
                            <group>
                                <field name="value_in_inr" readonly = "1"/>
                                <field name="lead_currency_id" string="Currency Type" options="{'no_open': True, 'no_create': True, 'no_edit': False}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Contact Info (Client Nodal Officer)">
                                <field name="nodal_officer_id"  domain="[('parent_id','=',partner_id)]" options="{'no_create': True, 'no_delete': True, 'no_open': True, 'no_update': True}" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                                <field name="nodal_officer_name" readonly="0" required="1"/>
                                <field name="nodal_officer_designation" readonly="0" required="1"/>
                                <field name="nodal_officer_mobile_no" readonly="0" required="1"/>
                                <field name="nodal_officer_email_address" readonly="0" required="1"/>
                            </group>
                            <group string="Document Upload">
                                <field name="document_ids">
                                    <tree editable="bottom" delete="1">
                                        <field name="doc_name_selection" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                        <field name="upload_filename" invisible="1"/>
                                        <field name="upload_file" filename="upload_filename" widget="FieldBinary" string="Upload File"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Account Holder">
                                <field name="department_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="division_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="section_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <field name="account_holder_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                            </group>
                            <group string="Reviewer">
                                <field name="reviewer_id" string="Reviewer" required="1" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}"/>
                                <separator string="Remarks" colspan="4" />
                                <field name="remark" string="Remarks"/>
                            </group>
                        </group>
                    </sheet>
                    <footer class="text-center">
                        <button name="pac_approve" type="object" class="btn-success" string="Approve" confirm = "Are you sure you want to submit?"/>
                        <button name="pac_reject" type="object" class="btn-danger" string="Reject" confirm = "Are you sure you want to reject?"/>
                        <button name="pac_revert" type="object" class="btn-warning" string="Revert" confirm = "Are you sure you want to revert?"/>
                        <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="pac_action_window">
            <field name="name">PAC</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_ids"
                    eval="[(5, 0, 0),
                           (0, 0, {'view_mode': 'tree', 'view_id': ref('pac_view_tree')}),
                           (0, 0, {'view_mode': 'form', 'view_id': ref('pac_apporve_form_view')})]" />
            <field name="domain">[('stage_id.code','=','pac_applied')]</field>

        </record>

       
    
    </data>
</odoo>
