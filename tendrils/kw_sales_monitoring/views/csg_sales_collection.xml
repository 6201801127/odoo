<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "csg_sales_collection" -->
        <record id="view_csg_sales_collection_tree" model="ir.ui.view">
            <field name="name">view.csg_sales_collection.tree</field>
            <field name="model">csg_sales_collection</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="csg_sales_collection_tree" default_order='state asc' decoration-muted="state == 'sync'">
                    <field name="sl_no" />
                    <field name="currency_type" />
                    <field name="csg_name" />
                    <field name="csg_head_id" />
                    <field name="account_holder_id" />
                    <field name="amount_received" />
                    <field name="date_of_receipt" />
                    <field name="mode_of_receipt" />
                    <field name="client_name" />
                    <field name="invoice_amount_taxed" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "csg_sales_collection" -->
        <record id="view_csg_sales_collection_form" model="ir.ui.view">
            <field name="name">view.csg_sales_collection.form</field>
            <field name="model">csg_sales_collection</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="csg_sales_collection_form">
                    <header>
                        <button name="sent_mail_to_account_holder" string="Send Mail" type="object" class="oe_highlight" attrs="{'invisible':[('state','in',('mail_sent','sync','close'))]}"/>
                        <button name="synched_to_v5" string="Synched to v5" type="object" class="oe_highlight" attrs="{'invisible':[('state','in',('sync','close'))]}"/>
                        <field name="state" widget="statusbar" nolabel="1" invisible="1" statusbar_visible="draft,mail_sent,sync,close"/>
                    </header>
                    <sheet>
                        <field name="state" invisible="1" />
                        <div class="oe_title">
                            <label for="sl_no" class="oe_edit_only" />
                            <h1>
                                <field name="sl_no" class="oe_inline"
                                    placeholder="Serial No." readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="currency_type" widget="radio" options="{'horizontal':True}"/>
                                <field name="csg_name" />
                                <field name="csg_head_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <field name="account_holder_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="date_of_receipt" />
                                <field name="mode_of_receipt"  widget="radio" options="{'horizontal':True}"/>
                                <field name="client_name" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <field name="amount_received" />
                                <field name="invoice_amount_taxed" />
                            </group>
                        </group>
                        <group>
                            <field name="collection_lines_ids" >
                                <tree editable="bottom">
                                    <field name="parent_id" invisible="1" />
                                    <field name="currency_type" invisible="1"/>
                                    <field name="invoice_no" />
                                    <field name="workorder_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                    <field name="it_tds" />
                                    <field name="igst_tds" attrs="{'invisible':[('currency_type','=','usd')]}"/>
                                    <field name="cgst_tds" attrs="{'invisible':[('currency_type','=','usd')]}"/>
                                    <field name="sgst_tds" attrs="{'invisible':[('currency_type','=','usd')]}"/>
                                    <field name="withholding_tax" attrs="{'invisible':[('currency_type','=','inr')]}"/>
                                    <field name="bank_charges" />
                                    <field name="penalty" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "csg_sales_collection" -->
        <record id="view_csg_sales_collection_search" model="ir.ui.view">
            <field name="name">view.csg_sales_collection.search</field>
            <field name="model">csg_sales_collection</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="csg_sales_collection_search">
                    <field name="client_name" />
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "csg_sales_collection" -->
        <record id="action_csg_sales_collection_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">CSG Collection</field>
            <field name="res_model">csg_sales_collection</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_csg_sales_collection_search" />
        </record>
        
        <record id="sequence_csg_collection" model="ir.sequence">
			<field name="name">Collection</field>
			<field name="code">csg_sales_collection</field>
			<field name="prefix">COLL/</field>
			<field name="padding">4</field>
			<field name="company_id" eval="False"/>
		</record>
    </data>
</odoo>