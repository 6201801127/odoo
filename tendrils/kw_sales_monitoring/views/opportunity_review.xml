<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Opportunity Review -->
    <record id="view_crm_opportunity_tree_review" model="ir.ui.view">
        <field name="name">crm.opportunity.tree.review</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <tree string="Opportunity Review">
                <field name="code"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="partner_id"/>
                <field name="name"/>
                <!-- <field name=""/> pac date -->
                <field name="account_holder_id"/>
                <!-- <field name=""/> Presales member -->
                <field name="reviewer_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Opportunity Review -->
    <record id="view_crm_opportunity_form_review" model="ir.ui.view">
        <field name="name">crm.opportunity.form.review</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <form string="Opportunity Review">
                <header>
                    <field name="stage_name" invisible="1"/>
                    <!-- Button for Assigning Project Manager -->
                    <button name="action_project_manager_review" string="Assign Project Manager"
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('is_pm_assigned', '=', True)]}"/>
                    
                    <!-- Button for Reassigning Project Manager -->
                    <button name="action_reassign_project_manager" string="Reassign Project Manager"
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('is_pm_assigned', '=', False)]}"/>

                    <!-- Button for Assigning Operations Manager -->
                    <button name="action_operations_manager_review" string="Assign Operations Manager"
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('is_operations_manager_assigned', '=', True)]}"/>

                    <!-- Button for Reassigning Operations Manager -->
                    <button name="action_reassign_operations_manager" string="Reassign Operations Manager"
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('is_operations_manager_assigned', '=', False)]}"/>
                </header>
                <sheet>
                    <group>
                        <field name="is_pm_assigned" invisible="1"/>
                        <field name="is_operations_manager_assigned" invisible="1"/>
                        <field name="pm_id" invisible="1"/>
                        <field name="sbu_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="code" readonly="1"/>
                        <field name="country_id" readonly="1"/>
                        <field name="state_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="name" readonly="1"/>
                        <!-- <field name=""/> pac date -->
                        <field name="account_holder_id" readonly="1"/>
                        <!-- <field name=""/> Presales member -->
                        <field name="reviewer_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   <record id="action_crm_opportunity_review" model="ir.actions.act_window">
        <field name="name">Opportunity Review</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_crm_opportunity_tree_review')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_crm_opportunity_form_review')})]"/>
    </record>

   
    <!-- Wizard for Project Manager Review -->
    <record id="view_project_manager_review_wizard_form" model="ir.ui.view">
        <field name="name">project.manager.review.wizard.form</field>
        <field name="model">project.manager.review.wizard</field>
        <field name="arch" type="xml">
            <form string="Project Manager Review">
                <group>
                    <field name="sbu_id" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                    <field name="pm_id" string="Tag PM" domain="[('emp_category.code','=','PM')]" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                </group>
                <footer>
                    <button string="Submit" type="object" name="submit_review" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard for Operations Manager Review -->
    <record id="view_operations_manager_review_wizard_form" model="ir.ui.view">
        <field name="name">operations.manager.review.wizard.form</field>
        <field name="model">operations.manager.review.wizard</field>
        <field name="arch" type="xml">
            <form string="Operations Manager Review">
                <group>
                    <field name="operation_team_member" options="{'no_create':True,'no_delete':True,'no_open':True,'no_update':True}" required="1"/>
                </group>
                <footer>
                    <button string="Submit" type="object" name="submit_review" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
