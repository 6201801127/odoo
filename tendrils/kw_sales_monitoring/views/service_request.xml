<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="service_request_list_view" model="ir.ui.view">
            <field name="name">service_request list</field>
            <field name="model">service_request</field>
            <field name="arch" type="xml">
              <tree create="0" import="0" >
                <field name="lead_name"/>
                <field name="request_department_id"/>
                <field name="request_service_id"/>
                <field name="request_date"/>
                <field name="request_by_id" />
                <field name="assigned_member_id"/>
                <button string="Tag Member" name="tag_member" type="object" class="oe_highlight" groups="kw_sales_monitoring.group_presales_head"/>
              </tree>
            </field>
          </record>
          
          <record id="service_request_action_window" model="ir.actions.act_window">
            <field name="name">Service Request</field>
            <field name="res_model">service_request</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('service_request_list_view')})]"/>
          </record>
        </data>

        <!-- Tag Member View Start -->

        <record id="service_reqest_add_tag_member_view" model="ir.ui.view">
          <field name="name">Tag Member Form View</field>
          <field name="model">service_request</field>
          <field name="arch" type="xml">
            <form duplicate="false">
              <sheet>
                <group>
                  <group>
                    <field name="tag_member_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                  </group>
                </group>
              </sheet>
              <footer class="text-center">
                <button name="update_assign_member" type="object" class="btn btn-primary" string="Tag Member"/>
                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
              </footer>
            </form>
          </field>
        </record>

        <!-- Tag Member View End -->

</odoo>
