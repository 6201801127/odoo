<odoo>
    <data>

        <record id="kw_employee_cert_nominate_view" model="ir.ui.view">
            <field name="name">Employee Nominate Wizard</field>
            <field name="model">employee_nominate_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="certification_emp_id" invisible="1"/>
                        <field name="employee_ids"  options="{'no_open': True,'no_create':True,'no_edit':True}">
                            <tree editable="bottom">
                                <field name="name" />
                                <field name="job_id"/>
                                <!-- <field name="emp_qualification"/> -->
                                <field name="total_experience_display"/>
                                <field name ="department_id"/>
                                <field name="work_email"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="update_employee_for_nominate" string="Update" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="nominate_employee_wizard_action" model="ir.actions.act_window">
            <field name="name">Employee Nominate Wizard</field>
            <field name="res_model">employee_nominate_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="kw_employee_cert_nominate_view"/>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Records to take action...
                </p>
            </field>
        </record>
    </data>
</odoo>        
