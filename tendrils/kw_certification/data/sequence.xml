<odoo>
    <data>
        <record id="certification_code" model="ir.sequence">
            <field name="name">Certification</field>
            <field name="code">self.kw_certification</field>
            <field name="prefix">//</field>
            <field name="padding">4</field>
        </record>
    </data>
    <!--    scheduler for late accepting -->
    <record id="certification_accept_remainder_mail_cron" model="ir.cron">
        <field name="name"> Certification: Developer Accept Certification Mail Cron</field>
        <field name="model_id" ref="model_kw_certification"/>
        <field name="state">code</field>
        <field name="code">model.scheduler_for_late_mail_response()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
        <field name="active">False</field>
    </record>
</odoo>