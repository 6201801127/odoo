<odoo>
    <record model="ir.module.category" id="module_kw_certification">
        <field name="name">Certification</field>
        <field name="description">Help You For Faster Bug Fix</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_manager_module_kw_certification" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_kw_certification"/>
    </record>

    <record id="group_landk_module_kw_certification" model="res.groups">
        <field name="name">L&amp;K</field>
        <field name="category_id" ref="module_kw_certification"/>
    </record>

    <record id="group_user_module_kw_certification" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_kw_certification"/>
    </record>
    <record id="group_report_manager_module_kw_certification" model="res.groups">
        <field name="name">Report Manager</field>
        <field name="category_id" ref="module_kw_certification"/>
    </record>

<!--    <function name="write" model="res.users">-->
<!--        <function name="search" model="res.users">-->
<!--            <value eval="[('active', '=', True),('groups_id','in',ref('base.group_user'))]"/>-->
<!--        </function>-->
<!--        <value eval="{'groups_id':[[4,ref('group_user_module_kw_certification')]] }" />-->
<!--    </function>-->

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('kw_certification.group_user_module_kw_certification'))]"/>
    </record>
    <!--    record rule for bug life cycle -->

    <data noupdate="0">
        <record id="kw_certification_personal_rule" model="ir.rule">
            <field name="name">Personal Tickets</field>
            <field ref="model_kw_certification" name="model_id"/>
            <field name="domain_force">['|', ('create_uid','=',user.id), '&amp;', ('view_status_user_ids', 'in', user.employee_ids.id), ('state', '!=', 'Draft')]</field>
            <field name="groups" eval="[(4, ref('group_user_module_kw_certification'))]"/>
        </record>

        <record id="kw_certification_manager_rule" model="ir.rule">
            <field name="name">All Tickets</field>
            <field ref="model_kw_certification" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_manager_module_kw_certification'))]"/>
        </record>

        <record id="kw_certification_lk_rule" model="ir.rule">
            <field name="name">All Rejected Tickets</field>
            <field ref="model_assign_employee" name="model_id"/>
            <field name="domain_force">[('status_certification','not like','%Rejected')]</field>
            <field name="groups" eval="[(4, ref('group_landk_module_kw_certification'))]"/>
        </record>

    </data>
</odoo>