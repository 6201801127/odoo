<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="certification_view_tree_view" model="ir.ui.view">
            <field name="name">Certification</field>
            <field name="model">kw_certification_report</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="number"/>
                    <field name="employee_id"/>
                    <field name="certification_id"/>
                    <field name="require_department_id"/>
                    <field name="technology_id"/>
                    <field name="raised_by_id"/>
                    <field name="target_date"/>
                    <field name="achieve_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="certification_view_search" model="ir.ui.view">
            <field name="name">Certification Search</field>
            <field name="model">kw_certification_report</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="number"/>
                    <field name="employee_id"/>
                    <field name="certification_id"/>
                    <field name="require_department_id"/>
                    <field name="technology_id"/>
                    <field name="raised_by_id"/>
                    <field name="target_date"/>
                    <field name="achieve_date"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter name="group_Employee" string="Employee" domain="[]" context="{'group_by':'employee_id'}" />
                        <filter name="group_raised_by" string="Raised By" domain="[]" context="{'group_by':'raised_by_id'}" />
                        <separator/>
                        <filter name="group_certification" string="Certification" domain="[]" context="{'group_by':'certification_id'}" />
                        <filter name="group_technology" string="Technology" domain="[]" context="{'group_by':'technology_id'}" />
                        <separator/>
                        <filter name="group_state" string="Status" domain="[]" context="{'group_by':'state'}" />
                    </group>
                    <group>
                        <filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year"/>
                        <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year"/>
                    </group>

                </search>
            </field>
        </record>

        <record id="certification_view_action" model="ir.actions.act_window">
            <field name="name">Certification Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_certification_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="certification_view_search" />
        </record>
    </data>
</odoo>
    
