<odoo>
    <data noupdate="0">

        <record id="email_template_for_assign_emp" model="mail.template">
            <field name="name">Certification Create E-mail Template</field>
            <field name="email_from">${ctx['email_from'] or ''}</field>
            <field name="subject">${ctx['subject'] or ''}</field>
            <field name="email_to">${ctx['email_to'] or ''}</field>
            <field name="email_cc">${ctx['mail_cc'] or ''}</field>
            <field name="model_id" ref="kw_certification.model_kw_certification"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type='html'>
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                        <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small>
                                        % if ctx['mail_for'] == 'Assign':
                                        <strong>${ctx['name']},</strong>
                                        % elif ctx['mail_for'] == 'Submit':
                                        <strong>${ctx['name']},</strong>
                                        % elif ctx['mail_for'] == 'Accept':
                                        <strong>${ctx['name']},</strong>
                                        % elif ctx['mail_for'] == 'Approve':
                                        <strong>${ctx['name']},</strong>
                                        % elif ctx['mail_for'] == 'Rejected':
                                        <strong>${ctx['name']},</strong>
                                        % elif ctx['mail_for'] == 'upload':
                                        <strong>All,</strong>
                                        % endif
                                        % if ctx['mail_for'] == 'Assign':
                                        <p>
                                            You have been nominated for ${ctx['cert_name']} certification. Please find the details below
                                        </p>
                                        <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                            <tr>
                                               <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    <strong>Certification Name:</strong>
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${object.certification_type_id.name}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    Department Name:
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${object.require_department_id.name}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    Technology Name:
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${object.technology_id.name}
                                                </td>
                                            </tr>
                                             <tr>
                                                <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    Policy:
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${object.enroll_policy}
                                                </td>
                                            </tr>
                                             <tr>
                                                <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    Target Date:
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${format_tz(object.target_date, format='%d-%b-%Y')}
                                                </td>
                                            </tr>
                                            % if ctx['enroll_policy'] == 'Payment By Employee':
                                          
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    Budget:
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${object.cert_budget} INR
                                                </td>
                                            </tr>
                                            % elif ctx['enroll_policy'] == 'Sharing':
                                            
                                            <tr>
                                                <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;" width="200px">
                                                    Budget:
                                                </td>
                                                <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${object.cert_budget} INR
                                                </td>
                                            </tr>
                                            % endif
                                        </table>
                                        % elif ctx['mail_for'] == 'Submit':
                                        <p>
                                           A New Certification on <b> ${ctx['cert_name']} </b> has been created. Please nominate resources.
                                        </p>
                                        <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                            <tr>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Certification name </th>
                                                <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Technology </th>
                                                <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department</th>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Target Date</th>
                                            </tr>
                                            <tr>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${object.certification_type_id.name}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                     ${object.technology_id.name}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                    ${object.require_department_id.name}
                                                </td>
                                                 <td style="padding-left:5px;color:#676767;height: 34px;width:50%;">
                                                    ${format_tz(object.target_date, format='%d-%b-%Y')}
                                                </td>
                                            </tr>
                                        </table>

                                        % elif ctx['mail_for'] == 'Accept':
                                        <p>
                                            <b> ${ctx['accepted_emp']} </b> has accepted the certification nomination on ${ctx['certification']}.
                                        </p>
                                        % elif ctx['mail_for'] == 'Rejected':
                                        <p>
                                            <b> ${ctx['rejected_emp']} </b> has rejected the certification nomination on ${ctx['certification']}. Kindly nominate another resource.  
                                        </p>
                                        % elif ctx['mail_for'] == 'Approve':
                                        <p>
                                            <b> ${ctx['cert_number']} </b> Certification is  Appoved By  <b> ${ctx['approver_name']} </b>.
                                        </p>
                                        % elif ctx['mail_for'] == 'upload':
                                        <p>
                                            <em>We are thrilled to share that <strong><span style="color:rgb(22, 123, 158)">${ctx['name']}${ctx['emp_code_desg']}</span></strong> has successfully completed the certification on 
                                            <strong><span style="color:rgb(22, 123, 158);">"${ctx['certification_name']}"</span></strong> which will be a valuable asset for our organization. 
                                            Let us take the opportunity to express our heartfelt appreciation for his/her hard work and dedication.
                                            </em>
                                        </p>
                                        <p>
                                             <em>The certification process was long and demanding, requiring a considerable amount of time, effort, and perseverance which has been shown by  <strong><span style="color:rgb(22, 123, 158)">${ctx['first_name']}</span></strong> with great enthusiasm.
                                            We believe this certification will prove to be a significant advantage for his/her career path aligned with organization GOAL
                                            </em>
                                        </p>
                                        <br/>
                                        <p><em><b><strong><span style="color:rgb(22, 123, 158)"> CONGRATULATIONS !! </span> </strong></b></em></p>
                                        % endif

                                    </h5>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
                <div style="margin-left: 1.2rem;">
                    % if ctx['mail_for'] == 'Assign':
                    <a href="/certification/accept/view?record_id=${ctx['record_id']}&amp;emp_id=${ctx['employee_id']}&amp;model=kw_certification" target="_blank"
                       style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #30a20f;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: none;">
                        Accept
                    </a>
                    <a href="/certification/reject/view?record_id=${ctx['record_id']}&amp;emp_id=${ctx['employee_id']}&amp;model=kw_certification" target="_blank"
                       style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #FF0000;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: none;">
                        Reject
                    </a>
                    %endif
                </div>

            </field>
        </record>

        <template id="kw_cert_employee_acceptance_success" name="Certification Offer">
            <t t-call="website.layout">
                <style>header{display:none;}</style>
                <div class="wrap">
                    <div class="container">
                        <section class="service-request mt32">

                            <div class="container card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mx-auto">
                                            <div class="section_content">
                                                <div class="modal-header d-flex justify-content-between text-center align-items-center">
                                                    <div class="">
                                                        <img src="/kw_certification/static/src/img/csmlogo.png" alt="" style="height:80px;" />

                                                        <span class="h1 ml-5">
                                                            Certification
                                                        </span>
                                                    </div>
                                                </div>
                                                <br/>
                                                <h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
                                                    Thank you for accepting the Certification !.
                                                    <br/>
                                                </h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>
        <template id="kw_cert_employee_reject" name="Certification Course Reject">
            <t t-call="website.layout">
                <style>header{display:none;}</style>
                <div class="wrap">
                    <div class="container">
                        <section class="service-request mt32">

                            <div class="container card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mx-auto">
                                            <div class="section_content">
                                                <div class="modal-header d-flex justify-content-between text-center align-items-center">
                                                    <div class="">
                                                        <img src="/kw_certification/static/src/img/csmlogo.png" alt="" style="height:80px;" />

                                                        <span class="h1 ml-5">
                                                            <b>Certification</b>
                                                        </span>
                                                    </div>
                                                </div>
                                                <br/>
                                                <h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
                                                    Sorry you are reject the Certification !.
                                                    <br/>
                                                </h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>
        <template id="kwantify_certification_thanks_pages" name="Thank You">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="container">
                        <section class="service-request mt32">
                            <div class="container card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mx-auto">
                                            <div class="section__content text-center">
                                                <div class="swal2-icon swal2-success swal2-animate-success-icon"
                                                     style="display: flex;" data-oe-model="ir.ui.view" data-oe-id="1641"
                                                     data-oe-field="arch"
                                                     data-oe-xpath="/t[1]/t[1]/div[1]/div[1]/div[1]/div[1]">
                                                    <span class="swal2-success-line-tip"/>
                                                    <span class="swal2-success-line-long"/>
                                                    <div class="swal2-success-ring"/>
                                                </div>
                                                <t><h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
                                                    Thank you!
                                                    <br/>
                                                    Your response has been already submitted.
                                                </h2></t>
                                                <a class="btn btn-primary badge"
                                                   style="background-color: #f7941d !important;" t-attf-href="/web">
                                                    <i class="fa fa-arrow-circle-left "/>
                                                    &amp;nbsp;
                                                    Go To Dashboard
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>
        <record id="reminder_certification_upload_template" model="mail.template">
            <field name="name">Reminder to upload the certificate Template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Reminder || Upload ${ctx['certification_name']} certificate!</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['cc_mail']}</field>
            <field name="model_id" ref="kw_certification.model_kw_certification"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type='html'>
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                        <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Hi</small>
                                        <!-- <strong> All,</strong> -->
                                        <p>
                                           Please upload the certificate of ${ctx['name']} on ${ctx['certification_name']}.
                                        </p>
                                    </h5>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
            </field>
        </record>
        <record id="reminder_certification_complete_template" model="mail.template">
            <field name="name">Reminder to complete the certification Template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Reminder || Completion of ${ctx['certification_name']} certification!.</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['cc_mail']}</field>
            <field name="model_id" ref="kw_certification.model_kw_certification"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type='html'>
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                        <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small>
                                        <strong>${ctx['name']},</strong>
                                        <p>
                                          Completion of certification on ${ctx['certification_name']} has been scheduled for ${format_tz(object.target_date, format='%d-%b-%Y')}. Kindly complete the certification before the target date.
                                        </p>
                                    </h5>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
            </field>

        </record>
    </data>
</odoo>                                        