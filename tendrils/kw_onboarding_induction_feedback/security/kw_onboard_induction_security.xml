<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_kw_onboarding_induction">
            <field name="name">Onboarding Induction</field>
            <field name="description">User access level for onboardings Induction</field>
            <field name="sequence">7</field>
        </record>
        <record id="group_kw_onboarding_induction_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_onboarding_induction_feedback.module_category_kw_onboarding_induction"/>
        </record>
        <record id="group_kw_onboarding_induction_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="kw_onboarding_induction_feedback.module_category_kw_onboarding_induction"/>
        </record>
         <record id="group_kw_onboarding_induction_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="kw_onboarding_induction_feedback.module_category_kw_onboarding_induction"/>
        </record>
        <record id="group_kw_onboarding_induction_notify_manager" model="res.groups">
            <field name="name">Notify Manager group</field>
            <field name="category_id" ref="kw_onboarding_induction_feedback.module_category_kw_onboarding_induction"/>
        </record>

        <data noupdate="0">
            <record id="kw_onboard_induction_manager" model="ir.rule">
                <field name="name">Manager record</field>
                <field ref="model_kw_onboarding_feedback" name="model_id"/>
                <field name="domain_force">[(1,'=',1)]</field>
                <field name="groups" eval="[(4, ref('group_kw_onboarding_induction_manager'))]"/>
            </record>
            <record id="kw_onboard_induction_officer" model="ir.rule">
                <field name="name">Officer record</field>
                <field ref="model_kw_onboarding_feedback" name="model_id"/>
                <field name="domain_force">[('submit_bool', '=', 'True')]</field>
                <!-- <field name="perm_create" eval="False"/>
                <field name="perm_unlink" eval="False"/> -->
                <field name="groups" eval="[(4, ref('group_kw_onboarding_induction_officer'))]"/>
            </record>

            <record id="kw_induction_user_rule" model="ir.rule">
                <field name="name">Personal Record</field>
                <field ref="model_kw_onboarding_feedback" name="model_id"/>
                <field name="domain_force">[('emp_id','=',user.employee_ids.id)]</field>
                <field name="perm_create" eval="False"/>
                <field name="perm_unlink" eval="False"/>
                <field name="groups" eval="[(4, ref('group_kw_onboarding_induction_user'))]"/>
            </record>
            <record id="kw_onboard_induction_assessment_manager" model="ir.rule">
                <field name="name">Manager record</field>
                <field ref="model_kw_employee_induction_assessment" name="model_id"/>
                <field name="domain_force">[(1,'=',1)]</field>
                <field name="groups" eval="[(4, ref('group_kw_onboarding_induction_manager'))]"/>
            </record>
            <record id="kw_onboard_induction_assessment_user" model="ir.rule">
                <field name="name">User record</field>
                <field ref="model_kw_employee_induction_assessment" name="model_id"/>
                <field name="domain_force">[('emp_id','=',user.employee_ids.id)]</field>
                <field name="groups" eval="[(4, ref('group_kw_onboarding_induction_user'))]"/>
            </record>
            <!-- <record id="kw_onboard_induction_officer" model="ir.rule">
                <field name="name">Officer record</field>[emp.id for emp in user.reviewer_employees]
                <field ref="model_kw_onboarding_feedback" name="model_id"/>
                <field name="domain_force">[(1,'=',1)]</field>
                <field name="groups" eval="[(4, ref('group_kw_onboarding_induction_officer'))]"/>
            </record> -->
        </data>
    </data>
</odoo>        
