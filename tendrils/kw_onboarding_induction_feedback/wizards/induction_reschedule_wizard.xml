<odoo>
    <data>
        <record id="induction_reschedule_wizard_form" model="ir.ui.view">
            <field name="name">induction_wizard_reschedule_form</field>
            <field name="model">induction_assessment_wizard_resch</field>
            <field name="arch" type="xml">
                <form string="Reschedule">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="emp_induction_id"  options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="induction_assessment_id" required="1" string="Assessment" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="start_date_of_induction" required="1"/>
                                <field name="end_date_of_induction" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm_for_induction_assessment" string="Confirm" type="object" class="btn-warning"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="kw_assessment_reschedule_wizard_action_window" model="ir.actions.act_window">
            <field name="name">Reschedule  </field>
            <field name="res_model">induction_assessment_wizard_resch</field>
            <field name="view_id" ref="induction_reschedule_wizard_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="induction_feedback_wizard_form" model="ir.ui.view">
            <field name="name">induction_wizard_feedback_form</field>
            <field name="model">induction_assessment_feedback_wizard</field>
            <field name="arch" type="xml">
                <form string="Reschedule">
                    <sheet>
                        <group string="Induction Feedback" style="text-align: center;">
                            <field name="applicant_induction_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1" invisible="1"/>
                        </group>
                        <group>

                            <table class="o_list_view table table-sm table-hover table-striped o_list_view_ungrouped">
                                <thead>
                                    <tr>
                                        <th class="o_column_sortable" width="50%">Questions</th>
                                        <th class="o_column_sortable" width="20%">Rating <i class="mandatory" style="color: #f00;">*</i></th>
                                        <th class="o_column_sortable" width="30%">Comment</th>
                                    </tr>
                                </thead>
                                <tbody class="ui-sortable">
                                    <tr>
                                        <td scope="row">How would you rate the induction overall?</td>
                                        <td> <field name="induction_rate_no" required="1"/> </td>
                                        <td>
                                            <field name='induction_rate' />
                                        </td>
                                        
                                    </tr>
                                    <tr>
                                        <td scope="row">Did it provide you with valuable information to help you do your job?</td>
                                        <td><field name="valuable_info_no" required="1"/> </td>
                                        <td>
                                            <field name='valuable_info'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">Did it help you understand more about the organization?</td>
                                        <td><field name="understand_organisation_no" required="1"/> </td>
                                        <td>
                                            <field name='understand_organisation'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">How was the presentation skill of the Inductor?</td>
                                        <td><field name="skill_of_inductor_no" required="1"/> </td>
                                        <td>
                                            <field name='skill_of_inductor'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">Did the Inductor handle your queries properly?</td>
                                        <td><field name="handel_queries_no" required="1"/> </td>
                                        <td>
                                            <field name='handel_queries'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">How would you rate the Indution coordinated for you?</td>
                                        <td><field name="induction_coordinated_no" required="1"/> </td>
                                        <td>
                                            <field name='induction_coordinated'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm_for_induction_feedback" string="Confirm" type="object" class="btn-warning"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="kw_induction_feedback_wizard_action_window" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">induction_assessment_feedback_wizard</field>
            <field name="view_id" ref="induction_feedback_wizard_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>