<odoo>
    <data>
        <record id="kwmaster_skill_induction_view_tree" model="ir.ui.view">
            <field name="name">kw_master_skill_induction_tree</field>
            <field name="model">kw_skill_master</field>
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree delete="false">
                    <!-- Add your fields here -->
                    <field name="name" />
                    <field name="description" />
                    <!-- <field name="skill_type" /> -->
                    <!-- <field name="employee_id" widget="many2many_tags" groups="kw_skill_assessment.group_kw_skill_assessment_manager"/> -->
                    <field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <!-- kw_master_skill form view -->
        <record id="kw_master_skill_induction_view_form" model="ir.ui.view">
            <field name="name">kw_master_skill_induction_form</field>
            <field name="model">kw_skill_master</field>
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="name" string="Name" />
                                <field name="no_of_qus"/>
                                <field name="assessment_duration"/>
                                <field name="pass_percentage"/>
                                <field name="description" string="Description"/>
                            </group>
                            <group>
                                <field name="skill_type" string="Induction Category" options="{'no_open': True,'no_create':True,'no_edit':True}"/> 
                                <field name="employee_id" widget="many2many_tags" string="Inductor of Induction" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_skill_master_induction_action_window" model="ir.actions.act_window">
            <field name="name">Induction Type Master</field>
            <field name="res_model">kw_skill_master</field>
            <field name="domain">[('skill_type', '=', 'Induction')]</field>
            <field name="context">{'default_skill_type': 'Induction'}</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_onboarding_induction_feedback.kwmaster_skill_induction_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_onboarding_induction_feedback.kw_master_skill_induction_view_form')})]"/>
            <field name="view_type">form</field>
        </record>

        <!-- induction question bank master configuration.... -->

        <record id="kw_ques_bank_master_induction_view_tree" model="ir.ui.view">
            <field name="name">kw_ques_bank_master.view.tree</field>
            <field name="model">kw_skill_question_bank_master</field>
            <field name="priority" eval="10" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree delete="false">
                    <field name="name" />
                    <field name="skill"/>
                    <!-- <field name="skill_types"/> -->
                    <field name="type" groups="base.group_no_one"/>
                    <field name="total_no_of_questions" />
                </tree>
            </field>
        </record>

        <!-- kw_ques_bank_master form view -->
        <record id="kw_ques_bank_master_induction_view_form" model="ir.ui.view">
            <field name="name">kw_ques_bank_master.view.form</field>
            <field name="model">kw_skill_question_bank_master</field>
            <field name="priority" eval="18" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="name" required="1"/>
                                <field name="skill_types" string="Category" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="skill" string="Induction name" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="total_no_of_questions" />
                                <field name="simple_questions"/>
                                <field name="average_questions"/>
                                <field name="complex_questions"/>
                                <field name="type" attrs="{'invisible': [('type','=', 'skill')]}"/>
                            </group>
                        </group>

                        <group>
                            <!-- <field name="questions" string="Questions"/> -->
                            <field name="questions" string="Questions">
									<tree>
										<field name="question" string="Question"/>
									</tree>
                            </field>
									
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_question_bank_master_induction_action_window" model="ir.actions.act_window">
            <field name="name">Question Bank Master</field>
            <field name="res_model">kw_skill_question_bank_master</field>
            <field name="domain">[('type','=','Induction')]</field>
            <field name="context">{'default_type':'Induction'}</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_onboarding_induction_feedback.kw_ques_bank_master_induction_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_onboarding_induction_feedback.kw_ques_bank_master_induction_view_form')})]"/>
        </record>

    </data>
</odoo>
