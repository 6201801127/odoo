<odoo>
    <data>
        <record id="tagged_employee_view" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">confirm_employee_wizard</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                        <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> <center>Are you sure you want to do?</center></p>
                            <field name="tagged_id" invisible="1"/>
                            <field name="note" invisible="0" required = "1"/>
                            
                    <footer class="text-center">
                        <!-- <button name="mail_send_employee" string="Send" type="object" class="btn-success"/>
                        <button name="cancel" string="Cancel" type="object" class="btn-danger"/> -->
                    </footer>
                </form>
            </field>
        </record>
        <record id="tagged_employee_action" model="ir.actions.act_window">
            <field name="name">Confirm</field>
            <field name="res_model">confirm_employee_wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_onboarding_induction_feedback.tagged_employee_view')})]"/>
        </record>

        <record id="confirm_score_employee_view" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">kw_feedback_induction_confirmed_wizard</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                        <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> <center>Are you sure you want to confirm?</center></p>
                            <field name="emp_score_confirm" invisible="1"/>
                            <field name="note" invisible="0" required = "1"/>
                            
                    <footer class="text-center">
                        <button name="mail_confirmed_manager" string="Confirm" type="object" class="btn-success"/>
                        <button name="cancel" string="Cancel" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="confirmed_score_employee_action" model="ir.actions.act_window">
            <field name="name">Confirm</field>
            <field name="res_model">kw_feedback_induction_confirmed_wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_onboarding_induction_feedback.confirm_score_employee_view')})]"/>
        </record>
        
    </data>
</odoo>