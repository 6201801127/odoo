<odoo>
    <data>
        <record id="view_kw_assessment_score_readonly_form" model="ir.ui.view">
            <field name="name">view.kw_induction_assessment_score.form</field>
            <field name="model">kw_skill_answer_master</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="26"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false">
                    <sheet>
                       <group>
							<group>
								<field name="user_id" string="Name" options="{'no_open': True}"/>
                                <field name="test_name" string="Test Name"/>
								<field name="skill_id" string="Skill" options="{'no_open': True}"/>
								<field name="skill_type_id" string="Skill Category" options="{'no_open': True}"/>
                                <field name="total_number_questions" string="Total Question"/>
                                <field name="total_attempted" string="Total Attempted"/>
                                <field name="total_correct_answer" string="Total correct answer"/>
                                <field name="score_id" options="{'no_open': True}"/>
                            </group>
                            <group>
                                <field name="total_mark" string="Total Mark"/>
                                <field name="total_mark_obtained" string="Total Mark Obtained"/>
                                <field name="strip_percentage" string="Percentage" />
                                <field name="time_taken_duration" string="Time Taken"/>
                                <field name="create_date" string="Test Date"/>
                                <field name="status" string="Test Status" />
							</group>
							
						</group>
                        <group string='Answer Given'>
                            <field name="child_ids" nolabel='1'>
                                <tree editable="bottom">
                                    <field name="question" string="Question" widget="html"/>
                                    <field name="correct_option" string="Correct Option"/>
                                    <field name="selected_option" string="Selected Option"/>
                                    <field name="mark_obtained" string="Mark Obtained"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_kw_assessment_score_manager_form" model="ir.ui.view">
            <field name="name">view.kw_induction_assessment_score.form</field>
            <field name="model">kw_skill_answer_master</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="28"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="false" edit="true" delete="false" duplicate="false">
                    <sheet>
                       <group>
							<group>
								<field name="user_id" string="Name" options="{'no_open': True}"/>
                                <field name="test_name" string="Test Name"/>
								<field name="skill_id" string="Skill" options="{'no_open': True}"/>
								<field name="skill_type_id" string="Skill Category" options="{'no_open': True}"/>
                                <field name="total_number_questions" string="Total Question"/>
                                <field name="total_attempted" string="Total Attempted"/>
                                <field name="total_correct_answer" string="Total correct answer"/>
                                <field name="score_id" options="{'no_open': True}"/>
                               
                            </group>
                            <group>
                                <field name="total_mark" string="Total Mark"/>
                                <field name="total_mark_obtained" string="Total Mark Obtained"/>
                                <field name="strip_percentage" string="Percentage" />
                                <field name="time_taken_duration" string="Time Taken"/>
                                <field name="create_date" string="Test Date"/>
                                <field name="status" string="Test Status" />
							</group>
							
						</group>
                        <group string='Answer Given'>
                            <field name="child_ids" nolabel='1'>
                                <tree editable="bottom">
                                    <field name="question" string="Question" widget="html"/>
                                    <field name="correct_option" string="Correct Option"/>
                                    <field name="selected_option" string="Selected Option"/>
                                    <field name="mark_obtained" string="Mark Obtained"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>