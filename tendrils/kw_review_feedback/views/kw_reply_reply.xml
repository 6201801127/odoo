<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_reply_reply_form" model="ir.ui.view">
            <field name="name">Replay Of Reply Form</field>
            <field name="model">kw_reply_reply</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false" duplicate='false' import='false'>
                    <sheet>
                        <group>
                            <field name="create_uid" string="Replied By" options="{'no_create':True,'no_edit':True,'no_open': True,}" />
                            <field name="reply_id" options="{'no_create':True,'no_edit':True,'no_open': True,}" invisible="1"/>
                            <field name="reply"/>
                            <field name="states" groups='kw_review_feedback.group_feedback_manager'/>
                            <field name="rpl_upload_attachment" filename="file_name" widget="FieldBinary" />
                            <field name="file_name" invisible='1'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="kw_reply_reply_list">
        <field name="name">Replay Of Reply list</field>
        <field name="model">kw_reply_reply</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false" >
                <field name="reply_id" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
            </tree>
        </field>
        </record>

        <record model="ir.actions.act_window" id="kw_reply_reply_action_window">
            <field name="name">Reply Of Reply view</field>
            <field name="res_model">kw_reply_reply</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_reply_reply_form')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_reply_reply_list')})]"/>
        </record>
    </data>
</odoo>
