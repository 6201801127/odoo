<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <!-- user view -->



    <record model="ir.ui.view" id="kw_review_feedback_list_user">
      <field name="name">kw_review_feedback list</field>
      <field name="model">kw_feedback</field>
      <field name="arch" type="xml">
        <tree create="true" delete="false" edit="false" duplicate="false" import='false' default_order='create_date desc' decoration-bf="user_color_check==True">
          <field name="user_color_check" invisible='1'/>
          <field name="module_name"/>
          <field name="feedback_type"/>
          <field name="feedback_headline"/>
          <field name="computed_reply"/>
          <field name="create_uid"/>
          <field name="create_date"/>
          <field name="state"/>
          <field name="rply_length_check" invisible="1"/>
          <button name="get_reply" string="Reply" type="object" class="oe_stat_button btn-info" attrs="{'invisible': ['|',('rply_length_check','=', True),('state','=', 'close')]}" />
          <button name="btn_reopen" string="Reopen" type="object" class="oe_stat_button btn-info" attrs="{'invisible': [('state','!=', 'close')]}" />
        </tree>
      </field>
    </record>

    <record id="kw_review_feedback_form_user" model="ir.ui.view">
      <field name="name">kw_review_feedback form</field>
      <field name="model">kw_feedback</field>
      <field name="type">form</field>
      <field name="mode">primary</field>
      <field name="priority" eval="16" />
      <field name="active" eval="True" />
      <field name="arch" type="xml">
        <form create="true" delete="false" edit="false" duplicate="false" import='false'>
          <header>
            <field name="state" widget="statusbar" statusbar_visible="inprogress,close"/>
          </header>
          <sheet>
            <group>
              <field name="module_name" placeholder="Write Module Name" style="width:50%%" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
              <field name="feedback_type" widget="radio" options="{'horizontal': true}" />
              <field name="feedback_headline" placeholder="Give Your Feedback" style="width:50%%"/>
              <field name="description" placeholder="Description" style="width:50%%"/>
              <field name="upload_attachment" filename="file_name" widget="FieldBinary"/>
              <field name="file_name" invisible="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.actions.act_window" id="kw_feedback_action_window_user">
      <field name="name">Create Feedback</field>
      <field name="res_model">kw_feedback</field>
      <field name="view_mode">tree,form</field>
      <field name="view_mode">tree</field>
      <field name="view_type">form</field>
      <field name="domain">[('create_uid','=',uid)]</field>
      <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_review_feedback_list_user')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_review_feedback_form_user')})]"/>

      <field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new feedback...
				</p>
			</field>
    </record>
    <!-- user view End -->

    
   
  </data>
</odoo>