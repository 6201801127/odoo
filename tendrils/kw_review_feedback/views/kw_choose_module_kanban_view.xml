<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- Add you code here -->
		<record model="ir.ui.view" id="kw_choose_module_dashboard">
			<field name="name">kw_choose_module_kanban_view</field>
			<field name="model">kw_choose_module</field>
			<field name="arch" type="xml">
				<kanban create="false" edit="false" import="false" delete="false">
					<field name="id"/>
					<field name="rec_module_name"/>
					<field name="choose_module_id"/>
					<field name="active_module"/>
					<field name="c_feedback"/>
					<field name="c_appreciation"/>
					<field name="c_issue"/>
					<field name="c_suggestion"/>
					<field name="c_rating"/>
					<field name="c_star" widget="priority"/>
					<field name="rating_count"/>

					<templates>
						<t t-name="kanban-box">
							<div t-attf-class="oe_kanban_global_click mb-3 p-1" style="width:300px">
								<div class="oe_kanban_details">
									<div class="d-flex justify-content-center border-bottom ">
										<p class="h4 text-info font-weight-bold p-3">
											<field name="rec_module_name"/>
										</p>
									</div>
									<div class="d-flex justify-content-between">
										<div class="col-sm-7 mt-4 p-2">
											<!-- <p class="ml-3 badge badge-warning font-weight-bold text-white mb-3" style="font-size:16px"> Total  <field name="c_feedback"/> Feedback </p> -->
											<div class="row px-3 py-1">
												<div class="col-sm-10">
													<span class="fa fa-thumbs-o-up text-muted" style="font-size:18px" aria-label="button"/>
													&amp;nbsp;&amp;nbsp;
													<span class="text-black">Appreciation</span>
												</div>
												<div class="pt-1 text-center">
													<u>
														<a type="object" class="font-weight-bold text-black"
														   name='view_appreciation'>
															<field name="c_appreciation"/>
														</a>
													</u>
												</div>
											</div>

											<div class="row px-3 py-1">
												<div class="col-sm-10">
													<span class="fa fa-check-circle-o text-muted" aria-label="button" style="font-size:18px"/> &amp;nbsp;&amp;nbsp;
													<span class="text-black">Suggestion</span>
												</div>
												<div class="pt-1 text-center">
													<u>
														<a type="object" class="font-weight-bold text-black" name='view_suggestion'>
															<field name="c_suggestion"/>
														</a>
													</u>
												</div>
											</div>

											<div class="row px-3 py-1">
												<div class="col-sm-10">
													<span class="fa fa-info-circle text-muted" style="font-size:18px" aria-label="button"/>
													&amp;nbsp;&amp;nbsp;
													<span class="text-black">Issue</span>
												</div>
												<div class="pt-1 text-center">
													<u>
														<a type="object" class="font-weight-bold text-black"
														   name='view_issue'>
															<field name="c_issue"/>
														</a>
													</u>
												</div>
											</div>
										</div>
										<div class="col-sm-5 p-4 text-center">
											<span class="text-black">Reviews</span>
											<div class="d-flex justify-content-center align-items-center">
												<div class="text-muted mr-1">
													<a type="object" class="text-muted" name='view_star'>
														<span style="font-size:2.2rem">
															<field name="c_rating"/>
														</span>
													</a>
												</div>
												<div class="h2 mt-2">
													<span class="fa fa-star text-warning" aria-label="button"/>
												</div>
											</div>
											<span class="fa fa-user-o text-muted mr-1 font-weight-bold" aria-label="button"/>
											<span class="font-weight-bold">
												<field name="rating_count"/>
											</span>
										</div>
									</div>
								</div>
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>


		<record model="ir.ui.view" id="kw_choose_module_dashboard_pie_chart">
			<field name="name">kw_dashboard_pie_chart</field>
			<field name="model">kw_choose_module</field>
			<field name="arch" type="xml">
				<graph string="Dashboard pie Graph" type="pie" orientation="vertical" stacked="True">
					<field name="choose_module_id" string="Module Name" type="col"/>
				</graph>
			</field>
		</record>

		<record model="ir.ui.view" id="kw_choose_module_dashboard_bar_graph">
			<field name="name">kw_dashboard_bar_graph</field>
			<field name="model">kw_choose_module</field>
			<field name="arch" type="xml">
				<graph string="Dashboard Bar Graph" type="bar" orientation="vertical" stacked="True">
					<field name="choose_module_id" string="Module Name" type="col"/>
				</graph>
			</field>
		</record>

		<!-- <record model="ir.ui.view" id="kw_dashboard_line_graph">
		<field name="name">kw_dashboard_line_graph</field>
		<field name="model">temp_kanban</field>
		<field name="arch" type="xml">
			<graph string="Dashboard line Graph" type="line">
				  <field name="rel_name" string="Module Name" type="col"/>
				  <field name="c_feedback"/>
				  <field name="c_appreciation" type="measure"/>
				  <field name="c_issue" type="measure"/>
				  <field name="c_suggestion" type="measure"/>
			</graph>
		</field>
		</record> -->


		<record model="ir.actions.act_window" id="kw_choose_module_dashbord_action_window">
			<field name="name">Dashboard</field>
			<field name="res_model">kw_choose_module</field>
			<field name="view_mode">kanban</field>
			<field name="domain">[('active_module','=',True)]</field>
			<field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_choose_module_dashboard')})]"/>
		</record>
	</data>
</odoo>          