<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <record id="kw_module_rating_tree_view" model="ir.ui.view">
            <field name="name">Module Rating Tree View</field>
            <field name="model">kw_module_rating</field>
            <field name="arch" type="xml">
                <tree string="" delete="false">
                    <field name="module_id"/>
                    <field name="ratings"/>
                </tree>
            </field>
        </record>

        <record id="kw_module_rating_form_view" model="ir.ui.view">
            <field name="name">Module Rating Form View</field>
            <field name="model">kw_module_rating</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <group>
                            <field name="module_id" style="width:50%%" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
                            <field name="ratings" widget="priority"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_module_rating_search_view" model="ir.ui.view">
            <field name="name">kw feedback review.search.view</field>
            <field name="model">kw_module_rating</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter name="module_id" string="Module" context="{'group_by':'module_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_module_rating_window">
            <field name="name">Module Rating</field>
            <field name="res_model">kw_module_rating</field>
            <field name="view_mode">tree,form</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>

            <field name="domain">[('create_uid','=',uid)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_module_rating_tree_view')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_module_rating_form_view')})]"/>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					Give your ratings here...
                </p>
            </field>
        </record>
    </data>
</odoo>