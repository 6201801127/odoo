<odoo>
  <data>


  <!-- admin view -->
    <record model="ir.ui.view" id="kw_review_feedback_list_admin">
      <field name="name">kw_review_feedback list</field>
      <field name="model">kw_feedback</field>
      <field name="arch" type="xml">
        <tree create="true" delete="true" edit="false" import="false" default_order='create_date desc' decoration-bf="admin_color_check==True">
          <field name="admin_color_check" invisible='1'/>
          <field name="module_name" />
          <field name="feedback_type"/>
          <field name="feedback_headline"/>
          <field name="computed_reply"/>
          <field name="create_uid"/>
          <field name="create_date"/>
          <field name="state"/>
          <button name="go_to_action_view" string="Action" type="object" class="oe_stat_button btn-info"/>
        </tree>
      </field>
    </record>

      <record id="kw_review_feedback_form_admin" model="ir.ui.view">
      <field name="name">kw_review_feedback form</field>
      <field name="model">kw_feedback</field>
      <field name="type">form</field>
      <field name="mode">primary</field>
      <field name="priority" eval="16" />
      <field name="active" eval="True" />
      <field name="arch" type="xml">
          <form create="true" delete="true" edit="false" import="false">
              <header>
                 <field name="state" widget="statusbar" statusbar_visible="inprogress,close"/>
              </header>  
              <sheet>
                <group>
                    <field name="module_name" placeholder="Write Module Name" style="width:50%%" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
                    <field name="feedback_type" 
                    widget="radio" options="{'horizontal': true}"
                    />
                    <field name="feedback_headline" placeholder="Give Your Feedback" style="width:50%%"/>
                    <field name="description" placeholder="Description" style="width:50%%"/>
                    <field name="upload_attachment" filename="file_name" widget="FieldBinary"/>
                    <field name="file_name" invisible="1"/>
                </group>
              </sheet>
          </form>
      </field>
     </record>

