  <!-- search -->
   <record id="kw_feedback_admin_search_view" model="ir.ui.view">
      <field name="name">kw_feedback Search View</field>
      <field name="model">kw_feedback</field>
      <field name="arch" type="xml">
          <search string="Search">
              <field name="state"/>
                    <filter string="Inprogress" name="inprogress" domain="[('state','=','inprogress')]"
                            help="Records in state Inprogress"/>
                      <filter string="Close" name="inprogress" domain="[('state','=','close')]"
                            help="Records in state close"/>
          </search>
      </field>
    </record>

   
    <record model="ir.actions.act_window" id="kw_feedback_action_window_admin">
      <field name="name">View Feedback</field>
      <field name="res_model">kw_feedback</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="domain">[('state','!=','draft')]</field> -->
      <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_review_feedback_list_admin')}),
