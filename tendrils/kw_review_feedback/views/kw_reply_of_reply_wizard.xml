<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_reply_of_reply_wizard_view" model="ir.ui.view">
            <field name="name">Reply Of Reply Wizard</field>
            <field name="model">kw_reply_of_reply_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <div class="row">
                                <div class="col-sm-3"> <p> Reply: </p> </div>
                                <div class="col-sm-9"> <field name="reply" string="Reply"/> </div>
                            </div>
                            <div class="row" groups='kw_review_feedback.group_feedback_manager'>
                                <div class="col-sm-3"> <p> Select State: </p> </div>
                                <div class="col-sm-9"> <field name="states" /> </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"> <p> Upload File: </p> </div>
                                <div class="col-sm-9">
                                    <field name="rpl_upload_attachment" filename="file_name" widget="FieldBinary"/>
                                    <field name="file_name" invisible='1'/>
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <button name="button_submit" type="object" class="btn btn-primary">Submit</button>
                                <footer></footer>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <!-- <act_window id="kw_reply_of_reply_wizard_actions"  name="Reply"
		            src_model="kw_feedback_reply" res_model="kw_reply_of_reply_wizard"
		            view_type="form" view_mode="form" target="new"/> -->
    </data>
</odoo>
