<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_choose_module_tree_view" model="ir.ui.view">
            <field name="name">kw choose Module Tree</field>
            <field name="model">kw_choose_module</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="choose_module_id" groups='kw_review_feedback.group_feedback_manager'/>
                    <field name="rec_module_name" groups='kw_review_feedback.group_feedback_manager'/>
                    <field name="active_module" groups='kw_review_feedback.group_feedback_manager'/>
                </tree>
            </field>
        </record>  

        <record id="kw_choose_module_form_view" model="ir.ui.view">
            <field name="name">kw choose Module form</field>
            <field name="model">kw_choose_module</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="choose_module_id" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
                                <field name="active_module"/>
                                <field name="rec_module_name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      <record model="ir.actions.act_window" id="kw_choose_module_window">
      <field name="name">Choose Module</field>
      <field name="res_model">kw_choose_module</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="domain">[('state','!=','draft')]</field> -->
      <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_choose_module_tree_view')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_choose_module_form_view')}),]"/>
        <field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No modules to view...
				</p>
			</field>

      
    </record>
              
    </data>
</odoo>