<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_reply_form" model="ir.ui.view">
            <field name="name">Replay Form</field>
            <field name="model">kw_feedback_reply</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false" duplicate='false' import='false'>
                    <sheet>
                        <group>
                            <!-- <field name="reply_create_check" invisible='1'/> -->
                            <field name="feedback_id" invisible='1'/>
                            <field name="module_name" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
                            <field name="feedback_type" />
                            <field name="feedback_headline"/>
                            <field name="description" />
                            <!-- <field name="ratings" widget="priority"/> -->
                            <field name="upload_attachment" filename="file_name" widget="FieldBinary" />
                            <field name="states" string="Status"/>
                            <field name="file_name" invisible='1'/>
                        </group>
                        <notebook name="notebook">
                            <page name="reply" string="Reply">
                                <field name="reply_ids" required="1">
                                    <tree create='false' edit='false' delete='false' editable='bottom'>
                                        <field name="is_editable" invisible="1"/>
                                        <field name="is_current_user" invisible="1"/>
                                        <field name="create_uid" string="Replied By" style="pointer-events:none;"/>
                                        <field name="create_date" style="pointer-events:none;"/>
                                        <field name="reply" style="pointer-events:none;"/>
                                        <!-- <field name="states" /> -->
                                        <field name="rpl_upload_attachment" filename="file_name" widget="FieldBinary" />
                                        <field name="file_name" invisible='1' />
                                        
                                        <button name="admin_edit_reply" string="Edit" type="object" class="oe_stat_button btn-info" attrs="{'invisible': ['|',('is_editable', '=', False),('is_current_user', '=', False)]}" />
                                        
                                        <!-- <button name="user_edit_reply" string="Edit" type="object" class="oe_stat_button btn-info" attrs="{'invisible': [('edit_boolean', '=', False),('is_admin_edit', '=', True)]}" groups='kw_review_feedback.group_feedback_user'/> -->
                                    </tree>
                                </field>
                                <field name="admin_check" invisible="1" string='Admin check'/>
                                <field name="user_check" invisible="1" string='User check'/>
                                <field name="button_check" invisible="1" string='Button check'/>

                                <p><button name="user_btn_reply_of_reply" type="object" string="Reply" class="oe_highlight" groups='kw_review_feedback.group_feedback_user' attrs="{'invisible': ['|',('button_check', '=', False),('states','=','close')]}"/></p>

                                <p><button name="admin_btn_reply_of_reply" type="object" string="Reply" class="oe_highlight" groups='kw_review_feedback.group_feedback_manager' attrs="{'invisible': ['|',('button_check', '=', True),('states','=','close')]}"/></p>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Edit form only -->

        <record id="kw_reply_edit_form" model="ir.ui.view">
            <field name="name">Edit Replay Form</field>
            <field name="model">kw_feedback_reply</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false" duplicate='false'>
                    <sheet>
                        <group>
                            <!-- <field name="reply_create_check" invisible='1'/> -->
                            <field name="feedback_id" invisible='1'/>
                            <field name="module_name" options="{'no_create':True,'no_edit':True,'no_open': True,}"/>
                            <field name="feedback_type" />
                            <field name="feedback_headline" />
                            <field name="description" />
                            <!-- <field name="ratings" widget="priority"/> -->
                            <field name="upload_attachment" filename="file_name" widget="FieldBinary" />
                            <field name="states" string="Status"/>
                            <field name="file_name" invisible='1'/>
                        </group>
                        <notebook name="notebook">
                            <page name="reply" string="Reply">
                                <field name="reply_ids">
                                    <tree create='false' edit='false' delete='false' editable='bottom'>
                                        <field name="is_editable" invisible="1"/>
                                        <field name="is_current_user" invisible="1"/>
                                        <field name="create_uid" string="Replied By" style="pointer-events:none;"/>
                                        <field name="create_date" style="pointer-events:none;"/>
                                        <field name="reply" style="pointer-events:none;"/>
                                        <!-- <field name="states" /> -->
                                        <field name="rpl_upload_attachment" filename="file_name" widget="FieldBinary"/>
                                        <field name="file_name" invisible='1'/>
                                        
                                        <button name="admin_edit_reply" string="Edit" type="object" class="oe_stat_button btn-info" attrs="{'invisible': ['|',('is_editable', '=', False),('is_current_user', '=', False)]}" />
                                        
                                        <!-- <button name="user_edit_reply" string="Edit" type="object" class="oe_stat_button btn-info" attrs="{'invisible': [('edit_boolean', '=', False)]}" groups='kw_review_feedback.group_feedback_user'/> -->
                                    </tree>
                                </field>
                                <field name="admin_check" invisible="1" string='Admin check'/>
                                <field name="user_check" invisible="1" string='User check'/>
                                <field name="button_check" invisible="1" string='Button check'/>
                                
                                <p><button name="user_btn_reply_of_reply" type="object" string="Reply" class="oe_highlight" groups='kw_review_feedback.group_feedback_user' attrs="{'invisible': [('button_check', '=', False)]}"/></p>

                                <p><button name="admin_btn_reply_of_reply" type="object" string="Reply" class="oe_highlight" groups='kw_review_feedback.group_feedback_manager' attrs="{'invisible': [('button_check', '=', True)]}"/></p>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="kw_feedback_reply_list">
            <field name="name">Replay list</field>
            <field name="model">kw_feedback_reply</field>
            <field name="arch" type="xml">
                <tree create="false" delete="true" edit="true" import='false'>
                    <field name="feedback_id" invisible='1'/>
                    <field name="module_name"/>
                    <field name="feedback_type"/>
                    <field name="feedback_headline"/>
                    <field name="description"/>
                    <!-- <field name="ratings" widget="priority"/> -->
                    <field name="upload_attachment" filename="file_name" widget="FieldBinary"/>
                    <field name="file_name" invisible='1'/>
                    
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_intermediate_action_window">
            <field name="name">Intermediate view</field>
            <field name="res_model">kw_feedback_reply</field>
            <field name="view_mode">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_reply_form')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_feedback_reply_list')})]"/>
        </record>
    </data>
</odoo>
