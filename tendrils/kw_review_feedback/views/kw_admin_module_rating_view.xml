<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
        <record id="kw_admin_module_rating_tree_view" model="ir.ui.view">
            <field name="name">Module Rating Tree View</field>
            <field name="model">kw_module_rating</field>
            <field name="arch" type="xml">
                <tree string="Rating Report" create="false" delete="false" edit="false" import="false">
                    <field name="create_uid"/>
                    <field name="create_date"/>
                    <!-- <field name="module_id"/> -->
                    <field name="ratings"/>
                </tree>
            </field>
        </record>

        <record id="kw_admin_module_rating_form_view" model="ir.ui.view">
            <field name="name">Module Rating Form View</field>
            <field name="model">kw_module_rating</field>
            <field name="arch" type="xml">
                <form>
                <sheet>
                    <group>
                        <field name="module_id" style="width:50%%"/>
                        <field name="ratings" widget="priority"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_admin_module_rating_window">
        <field name="name">Module Rating</field>
        <field name="res_model">kw_module_rating</field>
        <field name="view_mode">tree</field>
        <field name="context">{'group_by':'module_id'}</field>
        <field name="view_type">form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_admin_module_rating_tree_view')})]"/>

        <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face">
                        No reports to show...
                    </p>
                </field>
        </record>

    </data>
</odoo>