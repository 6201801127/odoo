<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_category_kw_feedback">
            <field name="name">Review &amp; Feedback</field>
            <field name="description">Helps to get feedback of the User ...</field>
            <!-- <field name="sequence">99</field> -->
        </record>
        <record id="group_feedback_user" model="res.groups">
            <field name="name">Feedback / User</field>
            <field name="category_id" ref="kw_review_feedback.module_category_kw_feedback"/>
        </record>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('base.group_user')),(4,ref('kw_review_feedback.group_feedback_user'))]"/>
        </record>
        <record id="group_feedback_manager" model="res.groups">
            <field name="name">Feedback / Manager</field>
            <field name="category_id" ref="kw_review_feedback.module_category_kw_feedback"/>
            <!-- <field name="implied_ids" eval="[(4, ref('group_feedback_user'))]"/> -->
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- feedback rule -->

        <record id ="manager_access_review_feedback" model = "ir.rule">
            <field name = "name">Review Feedback Manager Security Rule</field>
            <field name = "model_id" ref = "kw_review_feedback.model_kw_feedback" />
            <field name = "groups" eval = "[(4, ref ('kw_review_feedback.group_feedback_manager'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0" />
        </record>

        <record id = "review_feedback_user_access" model = "ir.rule">
            <field name = "name">Review Feedback User Security Rule</field>
            <field name = "model_id" ref = "kw_review_feedback.model_kw_feedback" />
            <field name = "groups" eval = "[(4, ref ('kw_review_feedback.group_feedback_user'))]" />
            <field name = "domain_force"> [('create_uid','=',user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0" />
        </record>

        <!-- Ratings rule -->

        <record id ="manager_access_review_rating" model = "ir.rule">
            <field name = "name">Review Rating Manager Security Rule</field>
            <field name = "model_id" ref = "kw_review_feedback.model_kw_module_rating" />
            <field name = "groups" eval = "[(4, ref ('kw_review_feedback.group_feedback_manager'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0" />
        </record>

        <record id = "review_rating_user_access" model = "ir.rule">
            <field name = "name">Review rating User Security Rule</field>
            <field name = "model_id" ref = "kw_review_feedback.model_kw_module_rating" />
            <field name = "groups" eval = "[(4, ref ('kw_review_feedback.group_feedback_user'))]" />
            <field name = "domain_force"> [('create_uid','=',user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0" />
        </record>

        <!-- Choose Module rule -->

        <record id ="manager_access_choose_module" model = "ir.rule">
            <field name = "name">Choose Module Manager Security Rule</field>
            <field name = "model_id" ref = "kw_review_feedback.model_kw_choose_module" />
            <field name = "groups" eval = "[(4, ref ('kw_review_feedback.group_feedback_manager'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0" />
        </record>

    </data>
</odoo>
