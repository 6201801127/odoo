<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>       

    <!-- Tree View -->
        <record model="ir.ui.view" id="view_kw_partner_contact_list">
            <field name="name">Contacts</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0'>
                    <field name="name"/>
                    <field name="title"/>
                    <field name="function"/>
                    <field name="email"/>
                    <field name="secondary_mail"/>
                    <field name="phone"/>
                    <field name="secondary_phone"/>
                    <field name="linked_in_id"/>
                    <field name="skype_id"/>
                    <field name="is_decision_making_authority"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_kw_partner_contact_form" model="ir.ui.view">
            <field name="name">view contacts form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>           
            <field name="arch" type="xml">
                <form string="Contacts" >                  
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Contact Name"/>
                                <field name="title" />
                                <field name="function" />
                                <field name="email"/>
                                <field name="secondary_mail"/>
                                <field name="phone"/>
                                <field name="secondary_phone"/>
                                <field name="linked_in_id"/>
                                <field name="skype_id"/>
                                <field name="comment" string='Area Of Expertise' placeholder="Area Of Expertise"/>
                                <field name="is_decision_making_authority"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
       
        <!-- window action -->
        <record id="action_kw_partner_contact_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Contact Details</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_partner','=',True)]</field>
            <field name="context">{'is_partner':False, 'edit':False, 'create':False, 'partner_profile':True,'check_partner':True}</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_kw_partner_contact_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_kw_partner_contact_form')})]"/>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>
