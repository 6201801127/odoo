<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record model="ir.ui.view" id="view_kw_partner_master_rel_list">
            <field name="name">Category</field>
            <field name="model">kw_partner_master_rel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_category" required="1"/>
                    <field name="prduct_id" widget="many2many_tags"/> 
                    <field name="sell_in" widget="many2many_tags" />
                    <field name="major_client" widget="many2many_tags" />
                    <field name="additional_info"/>
                </tree>
            </field>
        </record>

        <!-- Tree View -->
        <record model="ir.ui.view" id="view_kw_partner_master_rel_form">
            <field name="name">Category Form</field>
            <field name="model">kw_partner_master_rel</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_category" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="prduct_id" widget="many2many_tags"/>
                                <field name="sell_in" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="major_client" widget="many2many_tags"/>
                                <field name="additional_info"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- window action -->
        <record id="action_kw_partner_master_rel_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Category</field>
            <field name="res_model">kw_partner_master_rel</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>


    </data>
</odoo>
