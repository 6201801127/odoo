<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>       

        <!-- Form view -->
        <record id="view_kw_product_master_form" model="ir.ui.view">
            <field name="name">view.kw_product_master.form</field>
            <field name="model">kw_product_master</field>
            <field name="type">form</field>           
            <field name="arch" type="xml">
                <form string="kw_product_master_form" >                  
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    <!-- Tree View -->
        <record model="ir.ui.view" id="view_kw_product_master_list">
            <field name="name">Product Master</field>
            <field name="model">kw_product_master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
       
        <!-- window action -->
        <record id="action_kw_product_master_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Product Master</field>
            <field name="res_model">kw_product_master</field>
            <field name="domain">['|',('active', '=', True),('active', '=', False)]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>


    </data>
</odoo>
