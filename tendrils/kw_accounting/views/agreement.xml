<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Tree view for "model" -->
        <record id="view_rent_agreement_tree" model="ir.ui.view">
            <field name="name">view.rent_agreement.tree</field>
            <field name="model">rent_agreement</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="rent_agreement_tree" create="true" delete="true" edit="true">
                    <field name="purpose" />
                    <field name="partner_id" />
                    <field name="account_code" />
                    <field name="location" />
                    <field name="period_start" />
                    <field name="period_end" />
                    <field name="monthly_amount" sum="Total" />
                    <field name="security_deposit_paid" sum="Total"/>
                    <field name="security_deposit_code" />
                    <field name="security_amount" sum="Total"/>
                    <field name="due_date" />
                    <field name="frequency" />
                    <field name="status" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "model" -->
        <record id="view_rent_agreement_form" model="ir.ui.view">
            <field name="name">view.rent_agreement.form</field>
            <field name="model">rent_agreement</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="rent_agreement_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="purpose" class="oe_edit_only" />
                            <h1>
                                <field name="purpose" class="oe_inline"
                                    placeholder="purpose" required="1"/>
                            </h1>
                        </div>
                        <group col="12">
                            <group colspan="5">
                                <field name="partner_id" options='{"no_open": True, "no_create": True}'
                                domain="['|', ('parent_id', '=', False), ('is_company', '=', True),'|',('customer','=',True),('supplier', '=', True),('vendor_state', '=', 'approved')]"/>
                                <field name="account_code" />
                                <field name="location" required="1"/>
                                <field name="security_deposit_account_code" />
                                <field name="address" />
                            </group>
                            <group colspan="3">
                                <field name="expense_type" />
                                <field name="security_deposit_paid" required="1"/>
                                <field name="due_date" />
                                <field name="period" />
                                <field name="frequency" />
                                <field name="status" required="1"/>
                                <field name="agreement_copy" filename="agreement_copy_file_name"  />
                                <field name="agreement_copy_file_name" invisible="1" />
                            </group>
                            <group colspan="4">
                                <field name="rent_agreement_lines" string="Rent Schedule" context="{'default_rent_agreement_id': id}">
                                    <tree editable="bottom">
                                        <field name="rent_agreement_id" invisible="1" />
                                        <field name="from_date"  required="1"/>
                                        <field name="to_date"  required="1"/>
                                        <field name="agreement_amount" string="Amount" sum="Total" required="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <group>
                            <field name="remarks" />

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_rent_agreement_search" model="ir.ui.view">
            <field name="name">view.rent_agreement.search</field>
            <field name="model">rent_agreement</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="rent_agreement_search">
                    <field name="purpose" />
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_rent_agreement_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Rent Agreement</field>
            <field name="res_model">rent_agreement</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_rent_agreement_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add Rent Agreement
                </p>
            </field>
        </record>
    </data>
</odoo>