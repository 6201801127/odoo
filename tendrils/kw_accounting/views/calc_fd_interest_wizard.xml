<odoo>
	<data>
        <record id="fd_tracker_interest_wizard_view_form" model="ir.ui.view">
            <field name="name">FD Tracker Interest Calculation</field>
            <field name="model">calc_fd_interest_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="calculate_interest_till_date"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="calculate_fd_interest" type="object" string="Calculate" style="background-color:#108fbb !important;color:#fff" class='btn-lg' />
                            <button string="Cancel" class="btn-secondary btn-danger btn-lg" special="cancel" style="margin-left:10px"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="account_fd_calc_interest_action_window">
            <field name="name">FD Interest Calculation </field>
            <field name="res_model">calc_fd_interest_wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fd_tracker_interest_wizard_view_form"/>
            <field name="target">new</field>
        </record>


    </data>
</odoo>