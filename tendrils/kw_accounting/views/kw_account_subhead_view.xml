<odoo>
	<data>
        <record model="ir.ui.view" id="account_sub_head_form_view">
            <field name="name">Account Sub Head form view</field>
            <field name="model">account.sub.head</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <form>
                    <style>
                        .o_form_view .o_group.o_inner_group > tbody > tr > td.o_td_label{min-width: 175px !important;}
                    </style>
                    <sheet>
                        <group>
                            <group>
                                <field name="group_type" required="1" />
                                <field name="group_head" required="1" />
                                <field name="group_name" required="1" />
                                <field name="account_head" required="1" />
                                <field name="name" required="1"/>
								<field name="code" required="1" force_save='1' readonly='1'/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="account_sub_head_master_tree_view">
            <field name="model">account.sub.head</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="group_type" required="1" />
                    <field name="group_head" required="1" />
                    <field name="group_name" required="1" />
                    <field name="account_head" required="1" />
                    <field name="name" required="1"/>
                    <field name="code" readonly="1"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="account_sub_head_master_action_window">
            <field name="name">Account Sub Head</field>
            <field name="res_model">account.sub.head</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>