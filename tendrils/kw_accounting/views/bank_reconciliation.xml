<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- serach view for "account.move.line" -->

        <record model="ir.ui.view" id="bank_reconciliation_tree_view">
			<field name="model">account.move.line</field>
			<field name="arch" type="xml">
				<tree string="Journal Items" editable="bottom" banner_route="/accounting/bank_reconciliation" delete="false" default_order="reconciled,date asc" create="false" import="false" decoration-muted="(reconciled == True)">
                    <field name="date" string="Transaction Date" readonly="1"/>
                    <field name="move_id" required="0" groups="account.group_account_user" readonly="1" string="Voucher No"/>
                    <field name="particulars" readonly="1"/>
                    <field name="journal_id" options="{&quot;no_open&quot;:True}" readonly="1" invisible="1"/>
                    <field name="move_type" />
                    <field name="cheque_date" readonly="1" />
                    <field name="cheque_reference" readonly="1" />
                    <field name="name" readonly="1" invisible="1"/>
                    <field name="ref" readonly="1" invisible="1" />
                    <field name="statement_id" invisible="1" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="account_id" invisible="1" options="{&quot;no_open&quot;:True}" domain="[('company_id', '=', company_id)]" groups="account.group_account_user" readonly="1"/>
                    <!-- <field name="analytic_account_id" groups="account.group_account_user"/> -->
                    <!-- <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"/> -->
                    <field name="reconciled" invisible="1"/>
                    <!-- <field name="full_reconcile_id"/> -->
                    <!-- <field name="move_type" string="Type" /> -->
                    <field name="clear_date" attrs="{'readonly':[('reconciled','=',True)]}" force_save="1" />
                    <field name="debit" sum="Total Debit" readonly="1"/>
                    <field name="credit" sum="Total Credit" readonly="1"/>
                    <field name="amount_currency"  groups="base.group_multi_currency" invisible="1" readonly="1"/>
                    <field name="currency_id"  invisible="1" readonly="1"/>
                    <!-- <field name="date_maturity"/> -->
                    <field name="company_currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </tree>
			</field>
		</record>

        <record model="ir.ui.view" id="bank_reconciliation_report_tree_view">
			<field name="model">account.move.line</field>
			<field name="arch" type="xml">
				<tree string="Journal Items" editable="bottom" banner_route="/accounting/bank_reconciliation/report" delete="false" default_order="reconciled,date asc" create="false" import="false">
                    <!-- <field name="sl_no"/> -->
                    <field name="date" string="Transaction Date" readonly="1"/>
                    <field name="move_id" required="0" groups="account.group_account_user" readonly="1" string="Voucher No"/>
                    <field name="particulars" readonly="1"/>
                    <field name="journal_id" options="{&quot;no_open&quot;:True}" readonly="1" invisible="1"/>
                    <field name="move_type" />
                    <field name="cheque_date" readonly="1" />
                    <field name="cheque_reference" readonly="1" />
                    <field name="name" readonly="1" invisible="1"/>
                    <field name="ref" readonly="1" invisible="1" />
                    <field name="statement_id" invisible="1" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="account_id" invisible="1" options="{&quot;no_open&quot;:True}" domain="[('company_id', '=', company_id)]" groups="account.group_account_user" readonly="1"/>
                    <!-- <field name="analytic_account_id" groups="account.group_account_user"/> -->
                    <!-- <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"/> -->
                    <field name="reconciled" invisible="1"/>
                    <!-- <field name="full_reconcile_id"/> -->
                    <!-- <field name="move_type" string="Type" /> -->
                    <field name="clear_date" attrs="{'readonly':[('reconciled','=',True)]}" force_save="1" />
                    <field name="debit" sum="Total Debit" readonly="1"/>
                    <field name="credit" sum="Total Credit" readonly="1"/>
                    <field name="amount_currency"  groups="base.group_multi_currency" invisible="1" readonly="1"/>
                    <field name="currency_id"  invisible="1" readonly="1"/>
                    <!-- <field name="date_maturity"/> -->
                    <field name="company_currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </tree>
			</field>
		</record>

        <record id="account_move_line_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Bank Reconciliation</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('bank_reconciliation_tree_view')})]"/>
            <field name="domain">[('account_id.ledger_type','=','bank')]</field>
            <field name="context">{'search_default_account':True,"create": False,"edit": True}</field>
        </record>
        
        
    </data>
</odoo>