<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "creditor_ageing" -->
        <record id="view_creditor_ageing_tree" model="ir.ui.view">
            <field name="name">view.creditor_ageing.tree</field>
            <field name="model">creditor_ageing</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="creditor_ageing_tree" create="false" delete="false" edit="false">
                    <field name="partner_id" />
                    <field name="partner_account_code" string="Vendor Code" />
                    <field name="bill_no" />
                    <field name="date_due" />
                    <field name="payable_amount" sum="Total"/>
                    <field name="purchase_order_id" string="PO Ref." />
                    <field name="project_code" string="WO Ref." />
                    <field name="csm_invoice_id" />
                    <field name="csm_inv_collection_date" />
                    <field name="budget_type" string="Expense Type" />
                </tree>
            </field>
        </record>

        <!-- Search view for "creditor_ageing" -->
        <record id="view_creditor_ageing_search" model="ir.ui.view">
            <field name="name">view.creditor_ageing.search</field>
            <field name="model">creditor_ageing</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="creditor_ageing_search">
                    <field name="partner_id" />
                    <field name="purchase_order_id" />
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="creditor_ageing_pivot_view">
            <field name="name">Creditor Ageing Pivot</field>
            <field name="model">creditor_ageing</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="date_due" type="col" />
                    <field name="purchase_order_id" type="col" />
                    <field name="project_code" type="col" />
                    <field name="bill_no" type="row" />
                    <field name="partner_id" type="row"/>
                    <field name="payable_amount" type="measure" />
                </pivot>
            </field>
        </record>
        <!-- Main window action for "creditor_ageing" -->
        <record id="action_creditor_ageing_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Creditor Ageing</field>
            <field name="res_model">creditor_ageing</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_creditor_ageing_search" />
        </record>
    </data>
</odoo>