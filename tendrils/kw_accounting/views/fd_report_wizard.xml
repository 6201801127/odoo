<odoo>
	<data>
        <record id="fd_report_wizard_view_form" model="ir.ui.view">
            <field name="name">Filter FD Report</field>
            <field name="model">fd_report_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="specify_date" options="{'horizontal': true}" widget="radio" required='True'/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="find_related_fd_report" type="object" string="Find" style="background-color:#108fbb !important;color:#fff" class='btn-lg' />
                            <button string="Cancel" class="btn-secondary btn-danger btn-lg" special="cancel" style="margin-left:10px"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="account_fd_report_action_window">
            <field name="name">FD Report</field>
            <field name="res_model">fd_report_wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fd_report_wizard_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="account.account_fd_report_menu1" groups="account.group_account_user,account.group_account_manager,account.group_account_invoice" name="FD Report" parent="account.account_fd_tracker_menu_root" action="kw_accounting.account_fd_report_action_window" sequence="102"/>
        <record id="account.account_fd_report_menu1" model="ir.ui.menu">
            <field name="action" eval="False" />
        </record>
    </data>
</odoo>