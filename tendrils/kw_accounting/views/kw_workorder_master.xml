<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="kw_work_order_master_tree" model="ir.ui.view">
        <field name="name">Work Order Master View</field>
        <field name="model">kw_sales_workorder_master</field>
        <field name="arch" type="xml">
            <tree create='0' edit='0' delete='0' import='0' >
                <field name="kw_wo_id"/>
                <field name="workorder_code"/>
                <field name="workorder_name"/>
                <field name="wo_issue_date" />
                <field name="account_manager_id"/>
                <field name="wo_status"/>
                <field name="kw_wo_client_id"/>
            </tree>
        </field>
    </record>

    <record id="kw_work_order_master_search" model="ir.ui.view">
        <field name="name">Work Order Master Search View</field>
        <field name="model">kw_sales_workorder_master</field>
        <field name="arch" type="xml">
            <search>
                <field name="workorder_code"/>
                <field name="workorder_name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="kw_sales_workorder_master_action_window">
        <field name="name">Work Order Master</field>
        <field name="res_model">kw_sales_workorder_master</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem   id="work_order_master_menu" 
                groups="account.group_account_manager,account.group_account_invoice" 
                name="Work Order Master" parent="menu_master_accounting" 
                action="kw_accounting.kw_sales_workorder_master_action_window"/>

  </data>
</odoo>
