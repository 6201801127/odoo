<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "state_gstin" -->
        <record id="view_state_gstin_tree" model="ir.ui.view">
            <field name="name">view.state_gstin.tree</field>
            <field name="model">state_gstin</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="state_gstin_tree" create="true" delete="true" edit="true" editable="bottom">
                    <field name="state_name" />
                    <field name="gstin_no" />
        
                </tree>
            </field>
        </record>
        
       
        <!-- Search view for "state_gstin" -->
        <record id="view_state_gstin_search" model="ir.ui.view">
            <field name="name">view.state_gstin.search</field>
            <field name="model">state_gstin</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="state_gstin_search">
                    <field name="state_name" />
                    <field name="gstin_no" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "state_gstin" -->
        <record id="action_state_gstin_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">State Master</field>
            <field name="res_model">state_gstin</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_state_gstin_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click create button to add new State and GSTIN
                </p>
            </field>
        </record>
        
    </data>
</odoo>