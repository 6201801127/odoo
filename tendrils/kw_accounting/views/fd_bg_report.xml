<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "bg_reports" -->
        <record id="view_fd_reports_tree" model="ir.ui.view">
            <field name="name">view.fd_reports.tree</field>
            <field name="model">fd_reports</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="fd_reports_tree" create="0" delete="0" edit="0">
                    <field name="acc_number" />
                    <field name="start_date" />
                    <field name="maturity_date" />
                    <field name="principal_amt" />
                    <field name="rate_of_interest" />
                    <field name="ageing" invisible="1" />
                    <field name="fd_type" />
                    <field name="maturity_amt" />
                    <field name="recovered_or_renewed_dt" />
                    <field name="recovered_or_renewed_amt" />
                    <field name="maturity_interest_net" />
                    <field name="tds" />
                    <field name="maturity_interest_gross" />
                    <field name="lien_amount" />
                    <field name="free_amount" />
                </tree>
            </field>
        </record>
        
        
        <!-- Search view for "fd_reports" -->
        <record id="view_fd_reports_search" model="ir.ui.view">
            <field name="name">view.fd_reports.search</field>
            <field name="model">fd_reports</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="fd_reports_search">
                    <field name="acc_number" />
                    <group expand="0" string="Group By">
                        <filter string="Ageing" domain="[]" name="ageing_group" context="{'group_by': 'ageing'}"/>
                    </group>
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "fd_reports" -->
        <record id="action_fd_reports_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">fd Report</field>
            <field name="res_model">fd_reports</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_group_by_ageing_group':1}</field>
            <field name="search_view_id" ref="view_fd_reports_search" />
            
        </record>
        <!-- 
        ===============================================================================================
                                                    BG Report
        =============================================================================================== -->
        <record id="view_bg_reports_tree" model="ir.ui.view">
            <field name="name">view.bg_reports.tree</field>
            <field name="model">bg_reports</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="bg_reports_tree" create="0" delete="0" edit="0">
                    <field name="bank_id" />
                    <field name="bg_number" />
                    <field name="bg_date" />
                    <field name="bg_amount" />
                    <field name="bg_expiry_date" />
                    <field name="bg_expenses" sum="Total"/>
                    <field name="ageing" invisible="1"/>
                    <field name="claim_date" />
                    <field name="bg_purpose" />
                    <field name="wo_id" invisible="1"/>
                    <field name="wo_number" string="WO Code"/>
                    <field name="fd_amount" />
                    <field name="transaction_expiry" />
                    <field name="bg_closure_date" />
                </tree>
            </field>
        </record>
        
        <!-- Search view for "bg_reports" -->
        <record id="view_bg_reports_search" model="ir.ui.view">
            <field name="name">view.bg_reports.search</field>
            <field name="model">bg_reports</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="bg_reports_search">
                    <field name="bg_number" />
                    <group expand="0" string="Group By">
                        <filter string="Ageing" domain="[]" name="ageing_group" context="{'group_by': 'ageing'}"/>
                        <filter string="Bank" domain="[]" name="bank_id_group" context="{'group_by': 'bank_id'}"/>
                        <filter string="Workorder" domain="[]" name="wo_id_group" context="{'group_by': 'wo_id'}"/>
                        <filter string="BG Purpose" domain="[]" name="bg_purpose_group" context="{'group_by': 'bg_purpose'}"/>
                    </group>
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "bg_reports" -->
        <record id="action_bg_reports_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">BG Report</field>
            <field name="res_model">bg_reports</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_group_by_ageing_group':1}</field>
            <field name="search_view_id" ref="view_bg_reports_search" />
            
        </record>
    
        
    </data>
</odoo>