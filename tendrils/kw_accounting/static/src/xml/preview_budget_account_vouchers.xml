<templates>
    <t t-name="kw_accounting.preview_budget_account_vouchers">
        <div class="o_control_panel">
            <ol class="breadcrumb" role="navigation" style="width:30%;">
                <li class="breadcrumb-item active">
                    <p class="font-weight-bold h2 mb-4 mt-2">Expense Details</p>
                </li>
            </ol>
        </div>
        <div class="container-fluid mt-5 px-0">
            <table class="table table-sm table-bordered table-striped" id="accounting_vouchers_template">
                <thead>
                    <tr>
                        <th class="pl-1 text-left ledger-report-header">Sl#</th>
                        <th class="pl-1 text-left ledger-report-header">Project Name</th>
                        <th class="pl-1 text-left ledger-report-header">Account Sub-Head</th>
                        <th class="pl-1 text-left ledger-report-header">Date</th>
                        <th class="pl-1 text-left ledger-report-header">Voucher No.</th>
                        <th class="pl-1 text-left ledger-report-header">Ledger Name</th>
                        <th class="pl-1 text-left ledger-report-header">Debit</th>
                        <th class="pl-1 text-left ledger-report-header">Credit</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="widget.report_data" t-as="report">
                        <tr>
                            <td><t t-esc="report['sl_no']" /></td>
                            <td><t t-esc="report['project_name']" /></td>
                            <td><t t-esc="report['account_sub_head']" /></td>
                            <td><t t-esc="report['date']" /></td>
                            <td class="emp-name" style="vertical-align:top; color:#198fbb; cursor: pointer;" id="voucher_preview" t-att-data-voucher="report['voucher_id']" t-att-data-voucherType="report['voucher_type']"><u><t t-esc="report['voucher_no']" /></u></td>
                            <td><t t-esc="report['ledger_name']" /></td>
                            <td class="font-weight-bold text-right"><t t-esc="report['formatted_debit']" /></td>
                            <td class="font-weight-bold text-right"><t t-esc="report['formatted_credit']" /></td>
                        </tr>
                    </t>
                </tbody>
                <tfoot>
                    <t t-foreach="widget.sum_report_data" t-as="report">
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="font-weight-bold text-danger text-right"><t t-esc="report['debit']" /></td>
                            <td class="font-weight-bold text-danger text-right"><t t-esc="report['credit']" /></td>
                        </tr>
                    </t>
                </tfoot>
            </table>
        </div>
    </t>
</templates>