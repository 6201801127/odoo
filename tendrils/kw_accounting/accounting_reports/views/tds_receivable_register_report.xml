<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "tds.register.report" -->
        <record id="view_tds_receivable_register_report_tree" model="ir.ui.view">
            <field name="name">view.tds_receivable_register.tree</field>
            <field name="model">tds_register_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="tds_receivable_register_tree" create="false" delete="false" edit="false" default_order="transaction_date asc">
                    <field name="month_name" />
                    <field name="partner_id" invisible="1" />
                    <field name="partner_name" string="Vendor"/>
                    <field name="pan_no" />
                    <field name="fiscal_year" />
                    <field name="voucher_number" />
                    <field name="transaction_date" />
                    <field name="invoice_date" />
                    <field name="invoice_no" />
                    <field name="payment_date" />
                    <field name="base_amount" sum="base_amount"/>
                    <field name="tds_amount" sum="tds_amount"/>
                    <field name="tds_rate" sum="tds_rate"/>
                    <field name="nature_of_payment" />
                    <field name="under_section" />
                    <field name="narration" />
                    <field name="deposit_date" />
                    <field name="bank_name" />
                    <field name="cheque_no" />
                    <field name="challan_no" />
                    <field name="bsr_code" />
                    <field name="tds_expm_cert" />
                    <field name="tds_type" invisible="1" />
                </tree>
            </field>
        </record>
        
        <!-- Search view for "tds.register.report" -->
        <record id="view_tds_receivable_register_search" model="ir.ui.view">
            <field name="name">view.tds_receivable_register.search</field>
            <field name="model">tds_register_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="tds_receivable_register_search">
                    <field name="partner_id" />
                    <field name="pan_no" />
                    <filter string="Current Financial Year" name="current_financial_year" domain="[('current_financial_year','=',True)]"/>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "tds.register.report" -->
        <record id="action_tds_receivable_register_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">TDS Receivable Register</field>
            <field name="res_model">tds_register_report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[('tds_type','=','receivabale')]</field>
            <field name="context">\{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tds_receivable_register_report_tree')})]"/>
            <field name="search_view_id" ref="view_tds_receivable_register_search" />
            <!-- <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Record Found.
                </p>
            </field> -->
        </record>
    </data>
</odoo>