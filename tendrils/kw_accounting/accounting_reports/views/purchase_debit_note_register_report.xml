<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "sales.register.report" -->
        <record id="view_purchase_debit_note_register_report_tree" model="ir.ui.view">
            <field name="name">view.purchase_debit_note_register_report.tree</field>
            <field name="model">purchase.register.report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="purchase_debit_note_register_report_tree" create="false" delete="false" edit="false" default_order="transaction_date asc">
                    <!-- <field name="slno" /> -->
                    <field name="transaction_date" />
                    <field name="invoice_date" string="Date" />
                    <field name="voucher_number" />
                    <field name="invoice_number" string="Original Bill Number"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="invoice_id" invisible="1"/>
                    <field name="partner_name" />
                    <field name="partner_gstin" />
                    <field name="partner_state" />
                    <field name="partner_country" />
                    <field name="item" />
                    <field name="particulars" />
                    <field name="narration" string="Reason" />
                    <field name="product_category" />
                    <field name="hsn_code" />
                    <field name="taxable_amount" class="taxable_amount" sum="taxable_amount"/>
                    <field name="igst_rate" />
                    <field name="igst_amount" class="igst_amount" sum="igst_amount"/>
                    <field name="cgst_rate" />
                    <field name="cgst_amount" class="cgst_amount" sum="cgst_amount"/>
                    <field name="sgst_rate" />
                    <field name="sgst_amount" class="sgst_amount" sum="sgst_amount"/>
                    <field name="invoice_amount" class="invoice_amount" sum="invoice_amount"/>
                    <field name="rcm_applicable" />
                    <field name="itc_applicable" />
                    <field name="branch_id" />
                    <field name="type" invisible="1"/>
                    <field name="sbu_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Search view for "sales.register.report" -->
        <record id="view_purchase_debit_note_register_report_search" model="ir.ui.view">
            <field name="name">view.purchase_debit_note_register_report.search</field>
            <field name="model">purchase.register.report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="purchase_debit_note_register_report_search">
                    <field name="partner_id" />
                    <field name="hsn_code" />
                    <field name="sbu_id" />
                    <filter string="Current Financial Year" name="current_financial_year" domain="[('current_financial_year','=',True)]"/>

                    <filter name="c1_branch_id" string="C1" domain="[('branch_id.code','=','c1')]"/>
                    <filter name="csmpl_branch_id" string="CSMPL" domain="[('branch_id.code','=','csmpl')]"/>
                    
                    <separator />

                    <filter name="rcm_applicable" string="RCM Applicable" domain="[('rcm_applicable','=',True)]"/>
                    <filter name="itc_applicable" string="ITC Applicable" domain="[('itc_applicable','=',True)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Transaction Date" name="transaction_date" context="{'group_by':'transaction_date'}"/>
                        <filter string="Invoice Date" name="invoice_date" context="{'group_by':'invoice_date'}"/>
                    </group>
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "sales.register.report" -->
        <record id="action_purchase_debit_note_register_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Debit Note Register</field>
            <field name="res_model">purchase.register.report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[('type','=','in_refund')]</field>
            <field name="context">\{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('view_purchase_debit_note_register_report_tree')})]"/>
            <field name="search_view_id" ref="view_purchase_debit_note_register_report_search" />
        </record>
        
        <!-- Main menu for "sales.register.report" -->
        
        

    </data>
</odoo>