<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="company_login_menu_wizard_form_view" model="ir.ui.view">
            <field name="name">company_login.wizard.form.view</field>
            <field name="model">accounting.company.login</field>
            <field name="arch" type="xml">
                <form string="">
                    <script>
                        $(document).ready(function(){
                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        $(".modal-footer").hide();
                        });
                    </script>
                    <group>
                        <field name="company_id" required="1"  options="{'no_create': True, 'no_open': True}"  />
                        <field name="branch_id" required="1"  options="{'no_create': True, 'no_open': True}" />
                        <field name="financial_year" required="1"  options="{'no_create': True, 'no_open': True}" domain="[('date_start','>','2023-03-31')]" />
                    </group>
                    <div class="text-center">
                        <button class="btn btn-primary" type="object" name="submit_company_login">
                            Submit</button>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="company_login_wizard_action" model="ir.actions.act_window">
            <field name="name">Accounting: Company Login</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accounting.company.login</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Accounting"
            id="account.menu_finance"
            groups="account.group_account_user,account.group_account_manager,account.group_account_invoice"
            web_icon="kw_accounting,static/description/Accounting.png"
            sequence="40" action="company_login_wizard_action" />

        <template id="accounting_session_info" name="Accounting Company Login">
            <div class="o_onboarding_container collapse show">
                <div class="o_onboarding  o_onboarding_orange"
                    style="background-image:url(/account/static/src/img/account_dashboard_onboarding_bg.jpg)">
                    <div class="o_onboarding_wrap py-3">
                        <div class="container-fluid mt-0">
                            <div class="row justify-content-md-center">
                                <div class="col col-lg-3 text-left">
                                    <div class="o_onboarding_step_content_info">
                                        <h4 class="o_onboarding_step_title mt16">
                                            <span>Company : </span>
                                            <t t-esc="vals['company']" />
                                        </h4>
                                    </div>
                                </div>
                                <div class="col col-lg-3 text-right">
                                    <div class="o_onboarding_step_content_info">
                                        <h4 class="o_onboarding_step_title mt16">
                                            <span>Financial Year : </span>
                                            <t t-esc="vals['financial_year']" />
                                        </h4>
                                    </div>
                                </div>
                                <div class="col col-lg-3 text-right">
                                    <div class="o_onboarding_step_content_info">
                                        <h4 class="o_onboarding_step_title mt16">
                                            <span>Branch : </span>
                                            <t t-esc="vals['branch']" />
                                        </h4>
                                    </div>
                                </div>
                                <div class="col col-lg-3 text-right" style="align-self: self-end;">
                                    <div class="o_onboarding_step_content_info">
                                        <a class="o_onboarding_step_action btn" type="action"
                                            data-reload-on-close="true" role="button"
                                            data-method="setting_init_fiscal_year_action"
                                            data-model="accounting.company.login">
                                            Change
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>