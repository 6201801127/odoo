        <template id="bank_reconcile_bank_balance_report" name="Bank Balance">
            <div class="container-fluid my-4">
                <div class="row">
                    <div class="col-md-4 mr-auto">
                       <table class="table table-sm table-bordered table-striped mb-0">
                            <tr>
                                <td class="h5">Bank:</td>
                                <td style="background:#fff;" class="h5"><span class="text-danger" t-esc="vals['bank']"/></td>
                            </tr>
                            <tr>
                                <td class="h5">From Date:</td>
                                <td style="background:#fff;" class="h5"><span t-esc="vals['date_from']"/></td>
                            </tr>
                            <tr>
                                <td class="h5">To Date:</td>
                                <td style="background:#fff;" class="h5"><span t-esc="vals['date_to']"/></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-4">
                        <t t-set="company_balance" t-value="vals['company_balance']" />
                        <t t-set="bank_balance" t-value="vals['bank_balance']" />
                        <table class="table table-bordered table-sm table-striped mb-0">
                            <tr>
                                <td style="" class="h5">Balance as per company books:</td>
                                <td style="background: #fff; color: #000;" colspan="2" class="h5 text-right"><t t-esc="company_balance"  /></td>
                                <!-- <td style="background: #fff; color: #000;" class="h5 text-right"></td> -->
                            </tr>
                            <tr>
                                <td style="" class="h5">Amounts not reflected in bank:</td>
                                <td style="background: #fff; color: #000;" class="h5 text-right"><t t-esc="vals['bank_unreconciled_debit_balance']" /></td>
                                <td style="background: #fff; color: #000;" class="h5 text-right"><t t-esc="vals['bank_unreconciled_credit_balance']" /></td>
                            </tr>
                            <tr>
                                <td style="" class="h5">Balance as per bank:</td>
                                <td style="background: #fff; color: #000;" colspan="2" class="h5 text-right"><t t-esc="bank_balance" /></td>
                                <!-- <td style="background: #fff; color: #000;" class="h5 text-right"></td> -->
                            </tr>
                        </table>
                    </div>
                </div>
