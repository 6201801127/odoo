<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fd_bg_report_wizard_view" model="ir.ui.view">
        <field name="name">FD &amp; BG Report</field>
        <field name="model">fd_bg_report_wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <script>
                    $(document).ready(function(){
                    $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                    $(".modal-footer").hide();
                    });
                </script>
                <group>
                    <field name="date" required='1'/>
                    <field name="type" widget="radio" options="{'horizontal':True}"/>
                </group>
                <div class="text-center">
                    <button class="btn btn-primary" type="object" name="action_run_report_fd_bg">
                        Submit</button>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </div>
            </form>

          
        </field>
    </record>

    <record id="fd_bg_report_wizard_action" model="ir.actions.act_window">
        <field name="name">FD &amp; BG Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fd_bg_report_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    
</odoo>
