<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="kw_employee_sync_log_form" model="ir.ui.view">
            <field name="name">Employee Sync Log</field>
            <field name="model">kw_emp_sync_log</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employee Sync Log" create="false" edit="true" delete="false">
                    <header>
                        <button name="action_button_sync_record" type="object" string="Sync" class="btn-success"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="model_id" readonly="0"/>
                                <field name="rec_id" readonly="0"/>
                                <field name="code" readonly="0"/>
                                <field name="json_data" readonly="1"/>
                                <field name="response_result" readonly="1"/>
                                <field name="create_date" string="Created On" readonly="1"/>
                                <field name="status" readonly="0"/>
                                <field name="updated_status" readonly="0"/>
                            </group>
                        </group>
                    </sheet>
                </form>   
            </field>
        </record>

        <record id="kw_employee_sync_log_tree" model="ir.ui.view">
            <field name="name">Employee Sync Log</field>
            <field name="model">kw_emp_sync_log</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Sync Log" create="true" edit="false" import="false">
                    <field name="model_id" />
                    <field name="rec_id" />
                    <field name="code" />
                    <field name="json_data" />
                    <field name="response_result" />
                    <field name="create_date" string="Created On"/>
                    <field name="status" />
                </tree>
            </field>
        </record>
        
        <record id="kw_employee_sync_log_action" model="ir.actions.act_window">
            <field name="name">Employee Sync Log</field>
            <field name="res_model">kw_emp_sync_log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="kw_emp_sync_main_menu"
                  parent="kw_usability.kw_usability_parent_menu_item"
                  name="Employee Synchronized Log"
                  sequence="99"/>
        <menuitem id="kw_emp_sync_data_menu"
                  parent="kw_emp_sync_main_menu"
                  name="Employee Synchronized Data"
                  action="kw_employee_sync_log_action"
                  sequence="1"/>

    </data>
</odoo>
