<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="kw_synchronization_new_db_tree">
            <field name="name">kw sync new db tree</field>
            <field name="model">kw_synchronization</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="new_data"/>
                    <field name="model_name"/>
                    <field name="old_data"/>
                    <field name="operation"/>
                    <field name="sync_status"/>
                    <field name="sync_message"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_synchronization_new_db_action_window">
            <field name="name">Synchronization of new DB</field>
            <field name="res_model">kw_synchronization</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="kw_sync_data"
                  name="Synchronized Data"
                  parent="kw_usability.kw_usability_parent_menu_item"
                  action="kw_synchronization_new_db_action_window"
                  sequence="10"/>
    </data>
</odoo>
