<odoo>
    <data>
        <record model="ir.ui.view" id="identification_data_v5_view">
            <field name="name">Identification Data sync from V5</field>
            <field name="model">identification_sync_data_v5</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_ids" widget="many2many_default"
                                   options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' />
                            <field name="page_no"/>
                            <field name="page_size"/>
                        </group>
                        <footer>
                            <button name="button_get_identification_data" type="object" string="Get Identification Data"
                                    class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="identification_data_v5_act_window">
            <field name="name">Identification Data sync from V5</field>
            <field name="res_model">identification_sync_data_v5</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Get Identification Data From V5"
                  id="get_identification_data_menu"
                  parent="hr.menu_human_resources_configuration"
                  sequence="99"
                  action="identification_data_v5_act_window"
                  groups="hr.group_hr_manager"/>

    </data>
</odoo>
