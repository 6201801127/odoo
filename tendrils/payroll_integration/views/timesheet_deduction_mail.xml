<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="timesheet_deduction_mail" model="mail.template">
            <field name="name">Timesheet Deduction</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Timesheet Deduction of :${object.employee_id.name} (${object.employee_id.emp_code}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="model_id" ref="payroll_integration.model_hr_payslip"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                         ${object.employee_id.name},
                                         <br/>
                                         <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                            Your Salary has been deducted due to Timesheet Deficiate.
                                        </p>


                                        <table border="1" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem; ">
                                        <tr>
                                            <th style="height: 30px;width:65%;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Deduction Type </th>
                                            <th style="height: 30px;width:35%;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> No. of Days </th>
                                        </tr>
                                       %if ctx['timesheet_paycut_in_day'] > 0:
                                            <tr>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:10%;">
                                                    Timesheet Paycut
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                    ${ctx['timesheet_paycut_in_day']}
                                                </td>
                                            </tr>
                                        %endif
                                        %if ctx['timesheet_el_deduct_in_day'] > 0:
                                            <tr>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:10%;">
                                                    Timesheet EL Deduction
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                    ${ctx['timesheet_el_deduct_in_day']}
                                                </td>
                                            </tr>
                                        %endif 

                                    </table>

                                    </h5>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to take action.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>