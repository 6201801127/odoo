<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>



        <record id="view_form_kw_payroll_module_share_wizard" model="ir.ui.view">
            <field name="name">kw_payroll_module_share_wizard form</field>
            <field name="model">kw_payroll_process_wizard</field>
            <field name="arch" type="xml">
                <form string="Process Payroll">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="monthly_payroll_ids" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="share_selected_payroll_info_with_payroll_module" string="Share with Payroll" type="object" class=" btn btn-warning" icon="fa-share-alt"/>

                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_payroll_info_share_payroll_module_wizard" name="Share with Payroll" src_model="kw_employee_monthly_payroll_info" res_model="kw_payroll_process_wizard" view_type="form" view_mode="form" view_id="view_form_kw_payroll_module_share_wizard" key2="client_action_multi" target="new" />

        <record model="ir.ui.view" id="attendance_form_inherit">
            <field name="name">kw_payroll_process_wizard.inherit</field>
            <field name="model">kw_payroll_process_wizard</field>
            <field name="inherit_id" ref="kw_hr_attendance.view_form_kw_payroll_process_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='process_payroll_info']" position="after">
                    <button name="share_with_payroll" string="Share with Payroll" type="object" class=" btn btn-warning" icon="fa-share-alt"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>