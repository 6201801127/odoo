<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="health_insurance_policy_master_list">
            <field name="name">Health Insurance Policy Master Tree</field>
            <field name="model">health_insurance_policy_master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="policy_number"/>
                    <field name="vendor_name"/>
                    <field name="sum_assured_amount"/>
                    <field name="validity_upto"/>
                    <field name="toll_free_number"/>
                </tree>
            </field>
         </record>      


        <record model="ir.ui.view" id="health_insurance_policy_master_form">
            <field name="name">Health Insurance Policy Master Form</field>
            <field name="model">health_insurance_policy_master</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                    <div class="oe_title">
                        <label for="policy_number" class="oe_edit_only"/>
                        <h1>
                            <field name="policy_number" placeholder="Policy Number" required="True"/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="policy_type" options="{'horizontal':True}" widget="radio"/>
                                <field name="vendor_name"/>
                                <field name="sum_assured_amount"/>
                                <field name="validity_upto"/>
                                <field name="spoc_contact">
                                    <tree editable="top">
                                        <field name="spoc_name" />
                                        <field name="spoc_contact_no" />
                                    </tree>
                                </field>
                                <field name="toll_free_number"/>
                                <field name="claim_form_attachment" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                            <group>
                                <field name="benefits" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>    

        <record id="health_insurance_policy_master_window" model="ir.actions.act_window">
            <field name="name">Health Insurance Policy Master</field>
            <field name="res_model">health_insurance_policy_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Health Insurance Policy Master"
                  id="health_insurance_policy_master_menu"
                  parent="payroll_inherit.health_insurance_employee"
                  action="health_insurance_policy_master_window" sequence="100"
                  groups='kw_employee.group_payroll_manager,hr.group_hr_manager,payroll_inherit.payroll_insurance_group'/>

    </data>
</odoo>
