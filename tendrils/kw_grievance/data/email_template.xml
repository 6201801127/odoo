<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_forceorder_template" model="mail.template">
            <field name="name">Force Order Grievance</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">Generation of Force Order</field>
            <field name="email_to">${object.grievance_id.employee_id.work_email}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="kw_grievance.model_kw_force_order"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table border="0">
                    <tr>
                        <td>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                    <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        
                                    ${object.grievance_id.employee_id.name},        
                                        
                                </h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    Force Order for Grievance Request <b>${object.grievance_id.grievance_code}</b> 
                                    has been generated. 
                                    
                            </p>
                            <p style="color: #676767;line-height: 145%;font-size: 16px;text-decoration:underline">
                                <h3><b>FO Details:</b></h3>
                                </p>
                            
                                <table border="1" cellpadding="5" cellspacing="0" style="width:50%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                    <tr>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Grievance Request No.</th>
                                        <td style="padding-left:5px;color:#676767;height: 34px;width:30%;" >
                                            ${object.grievance_id.grievance_code}
                                        </td>

                                    </tr>
                                    <tr>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">FO Number </th>
                                        <td style="padding-left:5px;color:#676767;height: 34px;width:30%;" >
                                            ${object.fo_no}
                                        </td>

                                    </tr>
                                    <tr>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Date</th>
                                        <td style="padding-left:5px;color:#676767;height: 34px;width:30%;" >
                                            ${object.date}
                                        </td>

                                    </tr>
                                    <tr>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">FO Subject</th>
                                        <td style="padding-left:5px;color:#676767;height: 34px;width:30%;" >
                                            ${object.fo_subject}
                                        </td>

                                    </tr>
                                    <tr>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">FO Details</th>
                                        <td style="padding-left:5px;color:#676767;height: 34px;width:30%;" >
                                            ${object.fo_details}
                                        </td>

                                    </tr>
                                </table>
                            </div>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    ---------------------------------------------------
                                    <br/>
                                    This is a system generated mail. Please do not reply to this email. 
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            ]]>
            </field>
        </record>
    </data>
</odoo>      
