<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="grievance_applied_mail_template" model="mail.template">
            <field name="name">Grievance: Applied By Employee</field>
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="subject"> Grievance | Applied </field>
            <field name="email_to">${ctx['emails']}</field>
            <field name="model_id" ref="kw_grievance.model_kw_grievance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                Committee member,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                
                                A <strong>${object.grievance_type_id.name}</strong> Request <strong>${object.grievance_code}</strong> for <strong>${object.subject}</strong>  applied by <strong>${object.employee_id.name}</strong> .
                            </p>
                            <br/>                         
                </table> 
                ]]>   
               
            </field>

        </record>

        <record id="grievance_resolve_mail_to_user_template" model="mail.template">
            <field name="name">Grievance: Resolved by Manager</field>
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="subject"> Grievance | Resolved   </field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="model_id" ref="kw_grievance.model_kw_grievance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${object.employee_id.name}</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                The Grievance <strong>${object.grievance_code}</strong> for <strong>${object.subject}</strong> of <strong>${object.grievance_type_id.name}</strong> has been resolved by the committee.
                            </p>
                            <br/>

                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Thanks & regards <br/>
                                CSM Technologies Pvt. Ltd.
                            </p>
                             <br/>
                            <p style="color: #676767;font-size: 14px;margin-bottom: 0px;">This is a system generated mail. Please Do not reply to this mail.</p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>
        
    </data>
</odoo>