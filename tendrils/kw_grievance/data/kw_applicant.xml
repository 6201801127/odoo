<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_grievance_reject_email_template" model="mail.template">
            <field name="name">Applicant Informed</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">${ctx['subject']} | ${ctx['rec_state']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="kw_grievance.model_kw_grievance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table border="0">
                    <tr>
                        <td>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                    <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        % if ctx['action'] == 'submitted_by_cc':
                                            ${ctx['name']},
                                        % elif ctx['action'] == "applied_by_user":
                                            ${object.employee_id.parent_id.name},
                                        % elif ctx['action'] == 'cmd_forward_so':
                                            ${ctx['name']},    
                                        % elif ctx['action'] == "applied_by_hq_emp":
                                            ${ctx['name']},
                                        % elif ctx['action'] == "so_forward_to_so":
                                            ${ctx['name']},
                                        % elif ctx['action'] == "so_verified":
                                            ${ctx['name']},
                                        % elif ctx['action'] == "approved_by_cmd":
                                            ${object.employee_id.name},
                                        % elif ctx['action'] == 'rejected_by_cmd':
                                            ${object.employee_id.name},        
                                        %endif
                                </h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    % if ctx['action'] == 'submitted_by_cc':
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by <b>${object.employee_id.parent_id.name}</b>..

                                    % elif ctx['action'] == "applied_by_user":
                                        A <b>${ctx['subject']}</b> Request 
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by  <b>${object.employee_id.name}</b>.

                                    % elif ctx['action'] == 'cmd_forward_so':
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by  <b>${object.env.user.employee_ids.name}</b>.
                                    
                                    % elif ctx['action'] == "applied_by_hq_emp":
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by  <b>${object.employee_id.name}</b>.
                                    
                                    % elif ctx['action'] == "so_forward_to_so":
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by <b>${object.env.user.employee_ids.name}</b>.

                                    % elif ctx['action'] == "so_verified":
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by  <b>${object.env.user.employee_ids.name}</b>.

                                    % elif ctx['action'] == "approved_by_cmd":
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by  <b>${object.env.user.employee_ids.name}</b>.        
                                    
                                    % elif ctx['action'] == 'rejected_by_cmd':
                                        A <b>${ctx['subject']}</b> Request
                                        <b>${object.grievance_code}</b> for  
                                        <b>${object.subject}</b> has been <b>${ctx['rec_state']} </b> by  <b>${object.env.user.employee_ids.name}</b>.        
                                    %endif
                                </p>
                                

                            </div>
                           
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    ---------------------------------------------------
                                    <br/>
                                    This is a system generated mail. Please do not reply to this email. 
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            ]]>
            </field>
        </record>

        <record id="kw_grievance_fo_generation_email" model="mail.template">
            <field name="name">Grievance FO Generation</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">Grievance FO Generation</field>
            <field name="email_to">${ctx['email_to']}</field>
            <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
            <field name="model_id" ref="kw_grievance.model_kw_grievance"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                <table border="0">
                    <tr>
                        <td>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                    <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['user']},
                                </h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    Grievance application no. <b>${object.grievance_code}</b> has been approved by
                                    <b>${object.cmd_action_taken_by.name}</b>.You are responsible for Force Order generation.
                                    <br/>
                                    Kindly login to system to generate it.                                  
                                </p>                            
                            </div>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    ---------------------------------------------------
                                    <br/>
                                    This is a system generated mail. Please do not reply to this email. 
                                </p>
                            </div>
                        </td>
                    </tr>
                </table>
            ]]>
            </field>
        </record>
    </data>
</odoo>      
