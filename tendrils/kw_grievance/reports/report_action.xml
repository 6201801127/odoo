<odoo>
    <record id="paper_format_register" model="report.paperformat">
		<field name="name">Grievance Report</field>
		<field name="default" eval="True"/>
		<field name="format">A4</field>
		<field name="page_height">0</field>
		<field name="page_width">0</field>
		<field name="orientation">Landscape</field>
		<field name="margin_top">4</field>
		<field name="margin_bottom">4</field>
		<field name="margin_left">4</field>
		<field name="margin_right">4</field>
		<field name="header_line" eval="False"/>
		<field name="header_spacing">0</field>
		<field name="dpi">80</field>
	</record>
	
	

    <report 
		string="Grievance Report"
		id="action_grievance_report" 
		model="kw.force.order" 
		report_type="qweb-pdf" 
		attachment_use="True" 
		name="kw_grievance.report_grievance_view"
		file="kw_grievance.report_grievance_view"
		paperformat="kw_grievance.paper_format_register"	
	/>

</odoo>