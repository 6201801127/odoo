<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_so_remark_wizard" model="ir.ui.view">
            <field name="name">kw.remark.wizard</field>
            <field name="model">kw.remark</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="remark" required='1'/>
                    </group>

                    <newline/>
                    <footer>
                        <button name="update_so_progress" string="Update"
                            colspan="1" type="object" icon="fa-smile-o" class ="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
    </data>
</odoo>