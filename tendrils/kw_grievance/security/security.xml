            <field name="name">User Security Rule</field>
            <field name="groups" eval="[(4, ref('kw_grievance.griev_user'))]"/>
        </record>
        <record id="ir_rule_manager_security" model="ir.rule">
            <field name="name">Manager Security Rule</field>
            <field name="model_id" ref="model_kw_grievance"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('kw_grievance.kw_griev_manager_group'))]"/>
        </record>
        <record id="ir_rule_manager_security" model="ir.rule">
            <field name="name">Comittee Security Rule</field>
            <field name="model_id" ref="model_kw_grievance"/>
            <field name="domain_force">[('grievance_type_id.concerned_person_ids.id','in',[user.employee_ids.id])]</field>
            <field name="groups" eval="[(4, ref('kw_grievance.griev_spoc_committee_group'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('kw_grievance.griev_user'))]"/>
        </record>

