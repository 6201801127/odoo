<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <!-- griev_level_configuration tree view -->
        <record id="griev_level_configuration_view_tree" model="ir.ui.view">
            <field name="name">griev_level_configuration.view.tree</field>
            <field name="model">griev_level_configuration</field>
            <field name="arch" type="xml">
                <tree >
                    <!-- Add your fields here -->
                    <field name="level" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <!-- griev_level_configuration form view -->
        <record id="griev_level_configuration_view_form" model="ir.ui.view">
            <field name="name">griev_level_configuration.view.form</field>
            <field name="model">griev_level_configuration</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group col='2'>

                                <field name="level" />
                                <field name="name" required='1'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- griev_level_configuration action window -->
        <record id="griev_level_configuration_action" model="ir.actions.act_window">
            <field name="name">Level Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">griev_level_configuration</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
       
    </data>
</odoo>