<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="kw_grievance_master_form_view">
			<field name="name">kw Grievance Master form view</field>
			<field name="model">kw.grievance.type</field>
			<field name="priority" eval="15"/>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="code"/>
								<!-- <field name="department_id" /> -->
								<field name="concerned_person_ids"  widget='many2many_tags'/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
        <record model="ir.ui.view" id="kw_grievance_master_tree_view">
			<field name="model">kw.grievance.type</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="code"/>
					<!-- <field name="department_id"/> -->
					<field name="concerned_person_ids"  widget='many2many_tags'/>
				</tree>
			</field>
		</record>
        <record model="ir.actions.act_window" id="kw_grievance_master_action_window">
			<field name="name">Grievance Master</field>
			<field name="res_model">kw.grievance.type</field>
			<field name="view_mode">tree,form</field>
            <!-- <field name="search_view_id" ref="kw_court_case_search_view"/> -->

		</record>
	</data>
</odoo>