			<field name="res_model">kw.grievance</field>
			<field name="view_mode">tree,kanban</field>
			<field name="domain">[]</field>
			<field name="context">{'take_action': True}</field>
			<field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_grievance.kw_grievance_view_all_tree')}),
				(0, 0, {'view_mode': 'kanban', 'view_id': ref('kw_grievance.kw_grievance_kanban')})]"/>
		</record>
		<menuitem id="grievance_take_action_menu" name="Take Action" sequence="3" parent="employee_grievance_menu" action="grievance_take_action" groups="kw_grievance.griev_spoc_committee_group,kw_griev_manager_group"/>

		
