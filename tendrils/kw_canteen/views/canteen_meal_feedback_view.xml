<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!--     form view   -->
        <record model="ir.ui.view" id="canteen_feedback_view_form">
            <field name="name">Meal Feedback</field>
            <field name="model">kw_canteen_meal_feedback</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="infra_unit_location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="department_id"/>
                                <field name="desig_id" />
                                <field name="feedback" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="canteen_feedback_view_tree" model="ir.ui.view">
            <field name="name">Meal Feedback</field>
            <field name="model">kw_canteen_meal_feedback</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="infra_unit_location_id"/>
                    <field name="department_id"/>
                    <field name="desig_id"/>
                    <field name="feedback_date"/>
                    <field name="feedback"/>
                </tree>
            </field>
        </record>
        <!--  actions opening views on models  -->
        <record model="ir.actions.act_window" id="canteen_meal_feedback_action_window">
            <field name="name">Canteen Meal Feedback</field>
            <field name="res_model">kw_canteen_meal_feedback</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>