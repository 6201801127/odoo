<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="special_meal_create_wizard_form">
            <field name="name">Special Meal Allocate</field>
            <field name="model">special_meal_create_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_ids"  required='1' options="{'no_open': True,'no_create':True,'no_edit':True}">
                                <tree>
                                    <field name="name"/>
                                    <field name="emp_code"/>
                                    <field name="parent_id"/>
                                    <field name="department_id"/>
                                    <field name="job_id" string="Designation"/>
                                    <field name="infra_unit_loc_id"/>
                                </tree>
                                <form>
                                    <field name="name"/>
                                    <field name="emp_code"/>
                                    <field name="parent_id"/>
                                    <field name="department_id"/>
                                    <field name="job_id" string="Designation"/>
                                    <field name="infra_unit_loc_id"/>
                                </form>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create" name="create_employee_for_special_meal" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="special_meal_create_wizard_action_window" model="ir.actions.act_window">
            <field name="name">Special Meal Allocation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">special_meal_create_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field><!--<field name="target">new,current,inline</field>-->
        </record>
      
        <record model="ir.ui.view" id="special_meal_exclusion_update_wizard_form">
            <field name="name">Special Meal Exclusion</field>
            <field name="model">special_meal_exclusion_update_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_ids" widget='many2many_tags' required='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="exclusion_from" required='1'/>
                            <field name="exclusion_to" required='1'/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Update Exclusion" name="update_exclusion_for_special_meal" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="special_meal_exclusion_update_wizard_action_window" model="ir.actions.act_window">
            <field name="name">Special Meal Exclusion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">special_meal_exclusion_update_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>       
        </record>
        
    </data>
</odoo>