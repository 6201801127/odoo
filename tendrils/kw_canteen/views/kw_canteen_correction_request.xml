<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_canteen_correction_request_tree">
            <field name="name">Employee Canteen Request Form</field>
            <field name="model">kw_canteen_correction_request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="applied_date"/>
                    <field name="approved_date"/>
                    <field name="reason"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="kw_canteen_correction_request_id" model="ir.ui.view">
            <field name="name">Employee Canteen Request Form</field>
            <field name="model">kw_canteen_correction_request</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <form string="Apply Canteen Correction" duplicate="false">
                    <header>
                        <button name="apply_btn" type="object" string="Apply" class="btn-primary" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                        <button name="approved_btn" type="object" string="Approved" class="btn-success" groups="kw_canteen.canteen_manager_group" attrs="{'invisible':[('state', '!=', 'applied')]}"/>
                        <button name="rejected_btn" type="object" string="Reject" class="btn-danger" groups="kw_canteen.canteen_manager_group" attrs="{'invisible':[('state', '!=', 'applied')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="meal_date"/>
                                <field name="reason"/>
                            </group>
                            <group>
                                <field name="canteen_meals_ids" readonly="1" force_save="1" string="Canteen Meal Details" attrs="{'invisible':[('meal_date', '=', False)]}">
                                    <tree>
                                        <field name="recorded_date"/>
                                        <field name="meal_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="no_of_veg"/>
                                        <field name="no_of_non_veg"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="kw_canteen_correction_request_action_id" model="ir.actions.act_window">
            <field name="name">Canteen Correction Request</field>
            <field name="res_model">kw_canteen_correction_request</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>