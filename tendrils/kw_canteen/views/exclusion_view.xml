<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wizard_meal_list">
            <field name="name">Wizard Weekly Meal</field>
            <field name="model">exclusion_canteen_meal</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            
                            <field name="exclusion_type" attrs="{'required':[('exclusion_type','in',['permanent','temporary'])],'visible':[('exclusion_type', '!=', 'temporary')],
                            'invisible':['&amp;',('exclusion_type', '=', 'permanent'),('exclusion_type', '=', 'temporary')]}"  widget="radio" options="{'horizontal': true}"/>
                            <field name="start_date" attrs="{'invisible':[('exclusion_type', '=', 'permanent')],
                            'required': [('exclusion_type','=','temporary')]}"/>
                            <field name="end_date" attrs="{'required':[('exclusion_type','in',['permanent','temporary'])],
                            'visible':[('exclusion_type', '!=', 'temporary')],
                            'invisible':['&amp;',('exclusion_type', '=', 'permanent'),('exclusion_type', '=', 'temporary')]}"/>
                            <field name="reason"/>
                            <!-- <field name="regular_id"/> -->
                        </group>
                    </sheet>
                    <footer>
                        <button string="Update" type="object" name="update_employee" default_focus="1" class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="weakly_meal_wizard_action">
            <field name="name">Meal Exclusion</field>
            <field name="res_model">exclusion_canteen_meal</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>