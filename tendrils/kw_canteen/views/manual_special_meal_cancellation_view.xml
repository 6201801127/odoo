<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="special_meal_cancellation_form_view">
            <field name="name">Special meal cancellation</field>
            <field name="model">manual_special_meal_cancellation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group groups="kw_canteen.canteen_manager_group">
                            <group>
                                <field name="from_date" autocomplete="off"  />
                            </group>
                            <group>
                                <field name="to_date" autocomplete="off"  />
                            </group>
                            
                        </group>
                        <button string='Generate Daywise Meal'  name="generate_dates" type="object"  class="btn-warning" groups="kw_canteen.canteen_manager_group"/>
                        <separator />
                        <field name="emp_date_ids"  widget="x2many_2d_matrix" field_x_axis="attendance_date" field_y_axis="employee_id" field_value="present_status" groups="kw_canteen.canteen_manager_group">
                            <tree>
                                <field name="attendance_date"/>
                                <field name="employee_id"/>
                                <field name="present_status"/>
                            </tree>
                        </field>

                        <group groups="kw_canteen.canteen_manager_group">
                            <button string='Update Meal'  name="create_manual_cancellation" type="object" class="btn-primary"  confirm="Are you sure to update meal details ?" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="special_meal_cancellation_action_window">
            <field name="name">Special meal cancellation</field>
            <field name="res_model">manual_special_meal_cancellation</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>