<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_canteen_total_food_price_mail_temp" model="mail.template">
            <field name="name">Canteen: Total Food Price </field>
            <field name="email_from">${ctx['emails_from']}</field>
            <field name="subject"> Total Meal And Beverages Price</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="kw_canteen.model_meal_price_log"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                      <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;"> Dear ${object.employee_id.name},</span>
                                    </h5>

                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                           Your Meal And Beverages Expenses For Ths Month ,</b>
                                            <br/>As Listed Below.
                                        </p>
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 24px;">
                                            Price Details:
                                        </p>
                                        <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                            <tr>
                                                <th style="height: 30px;width:40%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Month</th>
                                                <th style="height: 30px;width:40%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Meal Price</th>
                                                <th style="height: 30px;width:40%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Beverages Price</th>
                                                <th style="height: 30px;width:40%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Total Price</th>
                                            </tr>

                                                <tr>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:20%;">
                                                        ${ctx['month']}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:50%;">
                                                        ${object.total_meal_price}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                                       ${ctx['beverage_price']}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                                       ${ctx['total_price']}
                                                    </td>
                                                </tr>

                                        </table>
                                </div>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    <br/>
                                    <br/>

                                    This is an automatically  generated email.

                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>