<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="daily_meal_report_view_tree" model="ir.ui.view">
            <field name="name">Daily Meal Report</field>
            <field name="model">current_day_meal_report</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false" edit="false">
                    <field name="recorded_date" />
                    <field name="infra_loc_id" />
                    <field name="veg_count"/>
                    <field name="non_veg_count" />
                </tree>
            </field>
        </record>
        <record id="view_kw_canteen_daily_meal_search" model="ir.ui.view">
            <field name="name">view.current_day_meal_report.search</field>
            <field name="model">current_day_meal_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="view_kw_canteen_daily_meal_search">
                    <field name="recorded_date" />
                    <field name="infra_loc_id" />
                    <field name="veg_count"/>
                    <field name="non_veg_count" />
                    <group expand="1" string="Group By">
                        <filter string="Unit/Branch" name="group_by_location" domain="[]" context="{'group_by':'infra_loc_id'}"/>
                    </group> 
                </search>
            </field>
        </record>
        <record id="current_day_meal_report_action" model="ir.actions.act_window">
            <field name="name">Daily Meal Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">current_day_meal_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
			<field name="context">{'search_default_group_by_location':1}</field>
        </record>
    </data>
</odoo>