<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="update_meal_report_form_view">
            <field name="name">Update Meal Report</field>
            <field name="model">kw_canteen_update_meal_report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group groups="kw_canteen.canteen_manager_group">
                            <group>
                                <field name="date_from" autocomplete="off" required='1'/>
                                <field name="date_to" autocomplete="off" required='1'/>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                            </group>
                        </group>
                        <group>
                            <field name="meal_record_ids">
                                <tree create='0' delete='0' edit='0'>
                                    <field name="employee_id" invisible='1'/>
                                    <field name="emp_code" />
                                    <field name="emp_name" />
                                    <field name="emp_designation_id" />
                                    <field name="infra_unit_location_id" />
                                    <field name="recorded_date" />
                                    <field name="meal_type_id" />
                                    <field name="is_special" />
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <center>
                                <button string='Remove Meal' name="button_remove_duplicate_record" type="object" class="btn btn-success btn-lg" groups="kw_canteen.canteen_manager_group"/>
                                <button string="Cancel" class="btn btn-danger btn-lg" special="cancel" style="margin-left: 10px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="update_meal_report_action_window">
            <field name="name">Update Meal Report</field>
            <field name="res_model">kw_canteen_update_meal_report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>