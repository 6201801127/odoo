<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_employee_canteen_expense_report_tree" model="ir.ui.view">
            <field name="name">view.employee_canteen_expense_report.tree</field>
            <field name="model">employee_canteen_expense_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="employee_canteen_expense_report_tree" create="false" delete="false" edit="false">
                    <field name="recorded_date" />
                    <field name="employee_id" />
                    <field name="department"/>
                    <field name="designation"/>
                    <field name="tea_coffee_count"  sum="Total"/>
                    <field name="tea_coffee_price" sum="Total"/>
                    <field name="b2c_count" sum="Total"/>
                    <field name="b2c_price" sum="Total"/>
                    <field name="regular_meal_count"  sum="Total"/>
                    <field name="regular_meal_price" sum="Total"/>
                    <field name="guest_meal_count" sum="Total"/>
                    <field name="guest_meal_price" sum="Total"/>
                </tree>
            </field>
        </record>


        <record id="view_employee_canteen_expense_report_search" model="ir.ui.view">
            <field name="name">view.employee_canteen_expense_report.search</field>
            <field name="model">employee_canteen_expense_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="employee_canteen_expense_report_search">
                    <field name="employee_id" />
                    <filter string="Self" domain="[('employee_id.user_id', '=', uid)]" name="me_record"/>
                    <separator/>
                    <filter string="This Month Transaction" domain="[('recorded_date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%Y-%m-26')),('recorded_date','&lt;=',(context_today()).strftime('%Y-%m-25'))]" name="this_month_transaction"/>
                    <filter string="Last Month Transaction" domain="[('recorded_date','&gt;=',(context_today()-relativedelta(months=2)).strftime('%Y-%m-26')),('recorded_date','&lt;=',(context_today()-relativedelta(months=1)).strftime('%Y-%m-25'))]" name="last_month_transaction"/>
                    <filter string="This Month" domain="[('recorded_date', 'like',context_today().strftime('%Y-%m'))]" name="this_month_employee_canteen_expense"/>
                    <group expand="1" string="Group By">
                        <filter string="Employee" name="group_by_employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    </group> 
                </search>
            </field>
        </record>

        <record id="action_employee_canteen_expense_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Canteen Transaction Report</field>
            <field name="res_model">employee_canteen_expense_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_me_record':1,'search_default_this_month_employee_canteen_expense':1}</field>
            <field name="search_view_id" ref="view_employee_canteen_expense_report_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Canteen Transaction Recorded.
                </p>
            </field>
        </record>


    </data>
</odoo>