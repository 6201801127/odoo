        <record model="ir.ui.view" id="kw_canteen_beverage_type_list">
            <field name="name">Beverages</field>
            <field name="model">kw_canteen_beverage_type</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="beverage_type"/>
                    <field name="beverage_code"/>
                    <field name="beverage_price" />
