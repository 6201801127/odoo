<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!--     form view   -->
        <record model="ir.ui.view" id="kw_canteen_response_log_view_form">
            <field name="name">Response Log</field>
            <field name="model">kw_canteen_response_log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="request_date"/>
                                <field name="request"/>
                                <field name="response" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_canteen_response_log_view_tree" model="ir.ui.view">
            <field name="name">Response Log</field>
            <field name="model">kw_canteen_response_log</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="request_date"/>
                    <field name="request"/>
                    <field name="response"/>
                </tree>
            </field>
        </record>
        <!--  actions opening views on models  -->
        <record model="ir.actions.act_window" id="kw_canteen_response_log_action_window">
            <field name="name">Response Log</field>
            <field name="res_model">kw_canteen_response_log</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>