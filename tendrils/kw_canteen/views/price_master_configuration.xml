<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="meal_price_list">
            <field name="name">Meal Price</field>
            <field name="model">price_master_configuration</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="meal_type" string='Meals' />
                    <field name="meal_code"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>
        <!--     form view   -->
        <record model="ir.ui.view" id="meal_price_form">
            <field name="name">Meal Price</field>
            <field name="model">price_master_configuration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="meal_type"  string='Meals'/>
                            <field name="meal_code"/>
                            <field name="price" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--  actions opening views on models  -->
        <record model="ir.actions.act_window" id="meal_price_action_window">
            <field name="name">Meal Price Configuration</field>
            <field name="res_model">price_master_configuration</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>