<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="meal_price_log_tree" model="ir.ui.view">
            <field name="name">meal_price_log.tree</field>
            <field name="model">meal_price_log</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="baverage_bio_log_tree" create="false" delete="false" edit="false">
                    <!-- <field name="code"/> -->
                    <field name="year"/>
                    <field name="month" invisible='1'/>
                    <field name="month_selection"/>
                    <field name="location_id"/>
                    <!--                    <field name="location"/>-->
                    <field name="employee_id" />
                    <!-- <field name="designation_id" /> -->
                    <!-- <field name="department_id" /> -->
                    <field name="no_of_regular_meal" />
                    <field name="no_of_guest_meal" />
                    <field name="total_price_of_regular_meal"/>
                    <field name="total_price_of_guest_meal"/>
                    <field name="total_meal_price" />
                    <button name="get_view_details" string="View Details" type="object" class="btn-primary"/>
                </tree>
            </field>
        </record>

        <record id="meal_price_log_search" model="ir.ui.view">
            <field name="name">view.meal_price_log.search</field>
            <field name="model">meal_price_log</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="meal_bio_log_search">
                    <field name="employee_id"/>
                    <field name="location_id"/>
                    <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_log"/>
                    <filter string="This Year" name="filter_meeting_year" domain="[('year', '=',context_today().strftime('%Y'))]" />
                    <separator/>
                    <filter string="Last Month" domain="[('month','=',(context_today()-relativedelta(months=1)).strftime('%%m')),('year', '=',context_today().strftime('%Y'))]" name="last_month_meal_price_report"/>
                    <filter string="This Month" domain="[('month','=',context_today().strftime('%m')),('year', '=',context_today().strftime('%Y'))]" name="current_month_meal_price_report"/>
                    <separator/>
                    <filter string="January" domain="[('month','=',1)]" name="january_log"/>
                    <filter string="February" domain="[('month','=',2)]" name="february_log"/>
                    <filter string="March" domain="[('month','=',3)]" name="march_log"/>
                    <filter string="April" domain="[('month','=',4)]" name="april_log"/>
                    <filter string="May" domain="[('month','=',5)]" name="may_log"/>
                    <filter string="June" domain="[('month','=',6)]" name="june_log"/>
                    <filter string="July" domain="[('month','=',7)]" name="july_log"/>
                    <filter string="August" domain="[('month','=',8)]" name="august_log"/>
                    <filter string="September" domain="[('month','=',9)]" name="september_log"/>
                    <filter string="October" domain="[('month','=',10)]" name="october_log"/>
                    <filter string="November" domain="[('month','=',11)]" name="november_log"/>
                    <filter string="December" domain="[('month','=',12)]" name="december_log"/>
                    <group expand="1" string="Group By">
                        <filter string="Employee Name" name="group_by_employee_id" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Location" name="group_by_loc" domain="[]" context="{'group_by':'location_id'}"/>
                    </group> 
                </search>
            </field>
        </record>

        <record id="meal_price_log_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Meal Price Log Report</field>
            <field name="res_model">meal_price_log</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
			<field name="context">{'search_default_current_month_meal_price_report':1}</field>
        </record>

    </data>
</odoo>