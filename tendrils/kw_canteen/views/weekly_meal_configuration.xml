<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="weekly_meal_list">
            <field name="name">Weekly Meal</field>
            <field name="model">weekly_meal_configuration</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="weekdays" />
                    <field name="items" />
                </tree>
            </field>
        </record>
        <!--     form view   -->
        <record model="ir.ui.view" id="weekly_meal_form">
            <field name="name">Weekly Meal</field>
            <field name="model">weekly_meal_configuration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="weekdays" />
                            <field name="items" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="kw_menu_master_kanban">
            <field name="name">Weekly Meal</field>
            <field name="model">weekly_meal_configuration</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name="weekdays" />
                    <field name="items" />
                    <templates>
                        <t t-name="kanban-box">
                            <div>
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <img src="/kw_canteen/static/src/img/meal.png" width="100px" alt="canteen_menu"/>
                                            </div>
                                            <div class="col-sm-9">
                                                <h4 style="display: inline-block;width:180px;white-space: nowrap;overflow: hidden !important;text-overflow: ellipsis;">
                                                    <i class='fa fa-calendar text-primary'></i>
                                                    <b aria-label="Day" title="Day">
                                                        <t t-esc="record.weekdays.value" />
                                                    </b>
                                                </h4>
                                                <h6>
                                                    <i class="fa fa-cutlery text-primary" role="img" />
                                                    <b aria-label="Category name" title="Category name">
                                                        <t t-esc="record.items.value" />
                                                    </b>
                                                </h6>
                                            </div>
                                        </div>
                                        
                                    </div>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--  actions opening views on models  -->
        <record model="ir.actions.act_window" id="weekly_meal_action_window">
            <field name="name">Weekly Meal Configuration</field>
            <field name="res_model">weekly_meal_configuration</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record model="ir.actions.act_window" id="user_weekly_meal_action_window">
            <field name="name">Weekly Meal</field>
            <field name="res_model">weekly_meal_configuration</field>
            <field name="view_mode">kanban</field>
            <field name="context">{'create':0,'edit':0,'delete':0}</field>
        </record>
    </data>
</odoo>