<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record id="beverage_price_log_tree" model="ir.ui.view">
            <field name="name">beverage_price_log.tree</field>
            <field name="model">beverage_price_log</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="beverage_price_log_tree" create="false" delete="false" edit="false" >
                    <field name="year"/>
                    <field name="month" invisible='1'/>
                    <field name="month_selection"/>
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="location_id"/>
                    <field name="no_of_beverages"/>
                    <field name="total_price"/>
                </tree>
            </field>
        </record>
        <record id="view_beverage_prive_report_search" model="ir.ui.view">
            <field name="name">view.beverage_prive_report.search</field>
            <field name="model">beverage_price_log</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="beverage_report_log_search">
                    <field name="employee_id" />
                    <field name="month"/>
                    <field name="location_id"/>
                    <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_log"/>
                    <filter string="This Year" name="filter_meeting_year" domain="[('year', '=',context_today().strftime('%Y'))]" />
                    <separator/>
                    <filter string="Last Month" domain="[('month_selection','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('month_selection','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_beverage_report"/>
                    <filter string="This Month" domain="[('month', 'like',context_today().strftime('%Y-%m'))]" name="this_month_beverage_report"/>
                    <separator/>
                    <filter string="January" domain="[('month','=',1)]" name="january_report"/>
                    <filter string="February" domain="[('month','=',2)]" name="february_report"/>
                    <filter string="March" domain="[('month','=',3)]" name="march_report"/>
                    <filter string="April" domain="[('month','=',4)]" name="april_report"/>
                    <filter string="May" domain="[('month','=',5)]" name="may_report"/>
                    <filter string="June" domain="[('month','=',6)]" name="june_report"/>
                    <filter string="July" domain="[('month','=',7)]" name="july_report"/>
                    <filter string="August" domain="[('month','=',8)]" name="august_report"/>
                    <filter string="September" domain="[('month','=',9)]" name="september_report"/>
                    <filter string="October" domain="[('month','=',10)]" name="october_report"/>
                    <filter string="November" domain="[('month','=',11)]" name="november_report"/>
                    <filter string="December" domain="[('month','=',12)]" name="december_report"/>
                    <group expand="1" string="Group By">
                        <filter string="Employee Name" name="group_by_employee_id" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Location" name="group_by_loc" domain="[]" context="{'group_by':'location_id'}"/>
                    </group> 
                </search>
            </field>
        </record>

        <record id="beverage_price_log_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Beverage Price Log Report</field>
            <field name="res_model">beverage_price_log</field>
			<field name="context">{'search_default_this_month_beverage_report':1}</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>
