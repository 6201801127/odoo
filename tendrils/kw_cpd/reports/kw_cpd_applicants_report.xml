<odoo>
    <data>
        <record id="kw_cpd_applicants_report_tree" model="ir.ui.view">
            <field name="name">kw_cpd_applicants_report_tree</field>
            <field name="model">kw_cpd_applicants_report</field>
            <field name="arch" type="xml">
                <tree class='cpd_applications_tree' import='0'>
                    <field name="employee_id"/>
                    <field name="institute_id"/>
                    <field name="course_id"/>
                    <field name="course_duration"/>
                    <field name="course_fee"/>
                    <field name="to_disburse_course_fee"/>
                    <field name="status"/>
                    <button name="kw_cpd_view_application" string=" COURSE" type="object" class="fa fa-eye oe_highlight"/>
                    <button name="kw_cpd_view_certification" string=" CERTIFICATION" type="object" class="fa fa-eye oe_highlight" attrs="{'invisible': [('status','in',['Course at Draft','Course Pending at RA', 'Course Pending at Dept Head','Course Pending at L&amp;K','Course Pending at CHRO','Course Approved','Course Rejected','Course on Hold'])]}"/>
                </tree>
            </field>
        </record>



        <record id="kw_cpd_applicants_action" model="ir.actions.act_window">
            <field name="name">CPD Report</field>
            <field name="res_model">kw_cpd_applicants_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'create': False,'edit':False,'delete':False,'import': False, 'duplicate': False}</field>
        </record>

        <menuitem name="Reports" id="menu_kw_cpd_reports" parent="main_menu_kw_cpd" action='kw_cpd_applicants_action' groups='kw_cpd.group_kw_cpd_lnk_manager' sequence="75"/>

    </data>
</odoo>
