<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_cpd_approval_log_tree" model="ir.ui.view">
            <field name="name">kw_cpd_approval_log_tree</field>
            <field name="model">kw_cpd_approval_log</field>
            <field name="arch" type="xml">
                <tree class='cpd_applications_log_tree'>
                    <field name="action_taken_by"/>
                    <field name="action_taken_on"/>
                    <field name="status"/>
                    <field name="remark"/>
                    <field name="pending_at"/>
                </tree>
            </field>
        </record>


        <record id="kw_cpd_approval_wizard_form" model="ir.ui.view">
            <field name="name">kw_cpd_approval_wizard</field>
            <field name="model">kw_cpd_approval_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                        <button name="cpd_action_submit_btn" string=" SUBMIT" type="object" class="fa fa-thumbs-o-up kw_cpd_green" style="margin-right: 10px;"/>
                        <button string=" CLOSE" class="fa fa-times-circle-o kw_cpd_red" special="cancel"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>