<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_course_master_tree" model="ir.ui.view">
            <field name="name">kw_course_master_tree</field>
            <field name="model">kw_course_master</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="institute_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>


        <record id="kw_course_master_act_window" model="ir.actions.act_window">
            <field name="name">Course Master</field>
            <field name="res_model">kw_course_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>


        <menuitem name="Course/Certification Master" id="menu_kw_course_master" parent="menu_kw_cpd_configuration" action="kw_course_master_act_window" sequence='5'/>

       
    </data>
</odoo>
