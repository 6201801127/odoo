<odoo>
    <data>
    
        <record id="kw_cpd_applications_apply_mail_template" model="mail.template">
            <field name="name">CPD Apply e-mail template</field>
            <field name="subject">CPD Application Submitted by ${object.employee_id.name}</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${object.employee_id.parent_id.work_email}</field>
            <field name="model_id" ref="kw_cpd.model_kw_cpd_applications"/>  
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                        <p>Dear <strong style="color: blue;">${object.employee_id.parent_id.name}</strong>,</p>

                        <p>${ctx['applied_user']} has submitted an application for the Certified Professional Drive (CPD).
                        Please review the application and provide your approval or rejection.</p>

                        <p>Thank You !</p>
                ]]>
            </field>
        </record>


        <record id="kw_cpd_applications_take_action_mail_template_to_employee" model="mail.template">
            <field name="name">CPD Take action e-mail template 1</field>
            <field name="subject">CPD Application ${ctx['state']} by ${ctx['act_category']}</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="kw_cpd.model_kw_cpd_applications"/>  
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                        <p>Dear <strong style="color: blue;">${ctx['dear_user']}</strong>,</p>
                        <p>${ctx['body']}</p>
                        <p>${ctx['reject_reason']}</p>

                        <p>Thank You !</p>

                        <p>----------------------------------------------------------------------------------------------------</p>

                        <p>This is a system generated mail. Please do not reply to this email.</p>
                ]]>
            </field>
        </record>

