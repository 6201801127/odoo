<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_cpd_percentage_tree" model="ir.ui.view">
            <field name="name">kw_cpd_percentage_tree</field>
            <field name="model">kw_cpd_percentage_config</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="kw_cpd_percentage_form" model="ir.ui.view">
            <field name="name">kw_cpd_percentage_form</field>
            <field name="model">kw_cpd_percentage_config</field>
            <field name="arch" type="xml">
                <form edit='0'>
                    <sheet>
                        <group>
                        <group>
                            <field name="existing_percentage"/>
                        </group>
                        <group>
                        </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        

        <record id="kw_percentage_config_act_window" model="ir.actions.act_window">
            <field name="name">Disbursement Percentage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_cpd_percentage_config</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Disbursement Percentage" id="menu_kw_cpd_percentage" parent="menu_kw_cpd_configuration" action="kw_percentage_config_act_window" sequence='10'/>


       
    </data>
</odoo>