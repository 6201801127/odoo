<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record id="kw_announcement_category_tree_view" model="ir.ui.view">
            <field name="name">Announcement Categories</field>
            <field name="model">kw_announcement_category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="alias" />
                    <field name="enable_comment" /> 
                    <field name="is_location_specific" />
                    <field name="assigned_groups" />
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record id="kw_announcement_category_form_view" model="ir.ui.view">
            <field name="name">Announcement Category</field>
            <field name="model">kw_announcement_category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name">Name</field>
                            <field name="alias">Alias</field>
                        </group>
                        <group>
                            <field name="enable_comment">Enable Comment</field>
                            <field name="is_location_specific">Location Specific</field>
                            <field name="assigned_groups">Assigned Groups</field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->

        <!-- actions views Opening-->
        <record id="kw_announcement_category_action_window" model="ir.actions.act_window">
            <field name="name">Announcement Categories</field>
            <field name="res_model">kw_announcement_category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create announcement category.</p>
            </field>
        </record>
        <!-- actions views Ending-->
        <menuitem name="Category"
                  id="kw_announcement_category_menu"
                  groups="kw_announcement.group_kw_announcement_publisher,kw_announcement.group_kw_announcement_manager"
                  parent='kw_announcement_menu_configuration'
                  sequence="5"
                  action="kw_announcement_category_action_window" />
                  
        <record id="kw_announcement.kw_announcement_category_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('kw_announcement.group_kw_announcement_manager'))]"/>
        </record>
    </data>
</odoo>
