<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record id="kw_announcement_template_tree_view" model="ir.ui.view">
            <field name="name">Announcement Templates</field>
            <field name="model">kw_announcement_template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_id"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record id="kw_announcement_template_form_view" model="ir.ui.view">
            <field name="name">Announcement Templates</field>
            <field name="model">kw_announcement_template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name">Name</field>
                            <field name="model_id">Alias</field>
                        </group>
                       
                        <field name="template_body">Template Body</field>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->

        <!-- actions views Opening-->
        <record id="kw_announcement_template_action_window" model="ir.actions.act_window">
            <field name="name">Announcement Templates</field>
            <field name="res_model">kw_announcement_template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create announcement template</p>
            </field>
        </record>
        <!-- actions views Ending-->
        <!-- <menuitem name="Templates"
                  id="kw_announcement_template_menu"
                  groups="kw_announcement.group_kw_announcement_manager"
                  parent='kw_announcement_parent_menu'
                  sequence="6"
                  action="kw_announcement_template_action_window" /> -->
        <menuitem name="Templates" id="base.announcement_template" parent="base.menu_custom" sequence="4"/>

        <menuitem name="Announcement Templates" action="kw_announcement_template_action_window" id="menu_action_announcement_template"
                parent="base.announcement_template" sequence="1"/>
                  
    </data>
</odoo>
