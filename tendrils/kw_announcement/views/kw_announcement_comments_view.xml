<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record id="kw_announcement_posted_comments_tree_view" model="ir.ui.view">
            <field name="name">Announcement</field>
            <field name="model">kw_announcement_comments</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="announcement_id" groups="kw_announcement.group_kw_announcement_manager"/>
                    <field name="comments" string="Message" groups="kw_announcement.group_kw_announcement_manager"/>
                    <field name="create_uid" string="Posted By" groups="kw_announcement.group_kw_announcement_manager"/>
                    <field name="create_date" string="Posted On" options="{'format':'MM dd y h:mm a'}" groups="kw_announcement.group_kw_announcement_manager"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- actions views Opening-->
        <record id="kw_announcement_post_comments_action_window" model="ir.actions.act_window">
            <field name="name">All Comments</field>
            <field name="res_model">kw_announcement_comments</field>
            <field name="view_mode">tree,form</field>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No announcement available.</p>
            </field>
        </record>
        <!-- actions views Ending-->
        <menuitem name="Comments" id="kw_announcement_post_comments_menu"
                  parent='kw_announcement_parent_menu'
                  sequence="3"
                  groups="kw_announcement.group_kw_announcement_manager"
                  action="kw_announcement_post_comments_action_window" />
                  
        <record id="kw_announcement.kw_announcement_post_comments_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('kw_announcement.group_kw_announcement_manager'))]"/>     
        </record>
    </data>
</odoo>
