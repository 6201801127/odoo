<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_announcement_email_template" model="mail.template">
          <field name="name">Announcement e-mail template</field>
          <field name="email_from">tendrils@csm.tech</field>
          <field name="subject">${object.headline}</field>
          <field name="email_to"></field>
          <field name="email_cc"></field>
          <field name="model_id" ref="kw_announcement.model_kw_announcement"/>
          <field name="auto_delete" eval="False"/>
          <field name="body_html" >
            <![CDATA[

                       
                        ${(object.description or '-') | safe}

                        <br/><br/>
                        <p>This is a system generated email. Please do not reply to this mail.</p>
                    ]]>
           
            </field>
       </record>

