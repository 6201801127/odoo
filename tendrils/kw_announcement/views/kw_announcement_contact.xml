<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_annoncement_contact_tree" model="ir.ui.view">
            <field name="name">res.partner.announcement.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts"  >
                    <field name="name" string="Name"  groups="kw_announcement.group_kw_announcement_manager"/>
                    <field name="email"  groups="kw_announcement.group_kw_announcement_manager"/>
                    <field name="active" invisible="1"  groups="kw_announcement.group_kw_announcement_manager"/>
                </tree>
            </field>
        </record>
		<record id="action_announcement_contact" model="ir.actions.act_window">
		    <field name="name">Contacts</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">res.partner</field>
		    <field name="view_mode">tree,form</field>
	        <field name="domain">[('is_announcement','=',1)]</field>
	        <field name="context">{'default_is_announcement':1,'default_is_meeting_participant':0,'default_consultancy':0, 'search_default_is_announcement': 1,'default_customer': 0,'default_supplier': 0, 'default_is_company': True}</field>
			<field name="view_ids" eval="[(5, 0, 0),
	            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_annoncement_contact_tree')})
	            ]"/>
             <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create new contact.
                </p>
            </field>
		</record>
		<menuitem name="Contacts" 
            parent="kw_announcement_menu_configuration" 
            id="menu_external_participant"   
            action="action_announcement_contact"/>


    </data>
</odoo>
