<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="kwannouncement_new_joinee_hr_template" model="kw_announcement_template">
            <field name="name">Announcement of New Joinee! </field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="auto_delete" eval="False"/>
            <!-- <span style="font-size: 12px;">Dear All,</span> -->
            <field name="template_body">
                    <![CDATA[
                    <span style="font-family: Arial, Helvetica, sans-serif;">
                        <p style="font-size: 12px;">Welcome <b style="font-size: 12px;">${object.name}</b> </p>
                        <p style="font-size: 12px;">Please Welcome <b style=" font-size: 12px;">${object.name}</b> who has joined us as <b style="font-size: 12px;">${object.job_id.name}</b> in ${object.department_id.name}.</p>
                         <p style="font-size: 12px;font-weight: bold;">Employee Details</p>

                        <table cellspacing="0" cellpadding="5" class="table table-bordered" style="font-size: 12px;width: auto;">
                            <tbody>
                                <tr>
                                    <td rowspan="9" width="120">
                                        <img src="/web/image?model=hr.employee&id=${object.id}&field=image_medium" alt="${object.name}"/>     
                                    </td>
                                    <td style="padding: 0.25rem;" width="150" ><strong>Employee Name</strong></td>
                                    <td style="padding: 0.25rem;">${object.name}</td>
                                </tr>
                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Joining Date</strong></td>
                                    <td style="padding: 0.25rem;">
                                    % if object.date_of_joining:
                                        ${object.date_of_joining.strftime('%d-%b-%Y')}
                                    % endif
                                    </td>
                                </tr>
                                
                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Department</strong></td>
                                     % if object.department_id:
                                        <td style="padding: 0.25rem;">${object.department_id.name}</td>
                                    % else:
                                        <td style="padding: 0.25rem;">NA</td>
                                    % endif
                                </tr>
                                
                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Division</strong></td>
                                    % if object.division:
                                        <td style="padding: 0.25rem;">${object.division.name}</td>
                                    % else:
                                        <td style="padding: 0.25rem;">NA</td>
                                    % endif
                                </tr>

                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Section</strong></td>
                                    % if object.section:
                                        <td style="padding: 0.25rem;">${object.section.name}</td>
                                    % else:
                                        <td style="padding: 0.25rem;">NA</td>
                                    % endif
                                 </tr>

                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Practice</strong></td>
                                    % if object.practise:
                                        <td style="padding: 0.25rem;">${object.practise.name}</td>
                                    % else:
                                        <td style="padding: 0.25rem;">NA</td>
                                    % endif
                                </tr>

                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Designation</strong></td>
                                    <td style="padding: 0.25rem;">
                                        % if object.job_id:
                                            ${object.job_id.name}
                                        % endif
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Reporting Authority</strong></td>
                                    <td style="padding: 0.25rem;">
                                        % if object.parent_id:
                                            ${object.parent_id.name}
                                        % endif
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 0.25rem;"><strong>Base Location</strong></td>
                                    <td style="padding: 0.25rem;">
                                        % if object.base_branch_id:
                                            ${object.base_branch_id.alias}
                                        % endif
                                    </td>
                                </tr>
                                 
                            </tbody>
                        </table>
                    </span>
                                
                    ]]>
                </field>
       </record>


    </data>
</odoo>