<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_comments" xml:space="preserve">
    <t t-name="kwannounce_comment_box">
        <div class="container">
            <table class="table  table-responsive table-striped">
                <thead>
                    <tr>
                        <td>
                            <div class="form-group">
                                <textarea class="form-control o_input o_announcement_comment_text_field" placeholder="Write a comment.."></textarea>
                                <button type="buton" class="btn btn-primary o_announcement_write_comment">Send</button> 
                            </div>
                        </td>
                    </tr>
                </thead>
                <tbody t-if="posted_comments.length">
                    <tr t-foreach="posted_comments" t-as="comment_rec">
                        <td>
                            <div >
                                <div class="pull-left">
                                    <img alt="" data-oe-model="res.partner" data-oe-id="" t-att-src='"/web/image/res.users/" + comment_rec.created_user_id + "/image_small/"' class="o_thread_message_avatar rounded-circle " />

                                    <h5 class="o_media_heading">
                                        <t t-esc="comment_rec.created_user_name"/>
                                    </h5>
                                    <small class="o_mail_timestamp" t-att-title="comment_rec.created_on">
                                        <t t-esc="comment_rec.lapse_time"/>
                                    </small>
                                </div>
                                <div class="pull-left">
                                    <div class="container">
                                        <div class="arrow">
                                            <div class="outer"></div>
                                            <div class="inner"></div>
                                        </div>
                                        <div class="message-body">
                                            <p>
                                                <t t-esc="comment_rec.comment"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</templates>
