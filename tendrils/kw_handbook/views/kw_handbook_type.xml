<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="kw_handbook_type_view_tree" model="ir.ui.view">
            <field name="name">kw_handbook_type.view.tree</field>
            <field name="model">kw_handbook_type</field>
            <field name="arch" type="xml">
                <tree string="">
                    <!-- <field name="sequence" widget="handle"/> -->
                    <field name="sort_no"/>
                    <field name="name" />
                    <field name="code" />
                    <field name="emp_id" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="kw_handbook_type_view_form" model="ir.ui.view">
            <field name="name">kw_handbook_type.view.form</field>
            <field name="model">kw_handbook_type</field>
            <field name="arch" type="xml">
                <form string="">
                     <!-- <header>
                        <button name="action_update_officer_access" string="Update Officer Access" type="object" class="btn btn-success"/>

                    </header> -->
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                                <!-- <field name="sequence"/> -->
                                <field name="sort_no"/>
                                <field name="emp_id" widget="many2many_tags"
                                options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_handbook_type_action" model="ir.actions.act_window">
            <field name="name">Handbook Types</field>
            <field name="res_model">kw_handbook_type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					There is no documents..
				</p>
            </field>
        </record>
        <menuitem
            id="kw_handbook_type_menu"
            name="Handbook Types"
            action="kw_handbook_type_action"
            parent="kw_onboarding_handbook_configuration_menu"
            sequence="10"/>
    </data>
</odoo>