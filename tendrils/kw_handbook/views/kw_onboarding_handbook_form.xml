<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- explicit form view of kw handbook Opening -->
        <record model="ir.ui.view" id="kw_handbook_form_view">
            <field name="name">Kw handbook form view</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="description"/>
                                <field name="user_ids" widget="many2many_tags" invisible="1"/>
                            </group>
                            <group groups="kw_handbook.group_kw_handbook_manager">
                                <field name="category" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="expires_on" options="{'datepicker':{'minDate': 0}}"/>
                                <field name="posted_on"/>
                                <field name="revised_on" invisible="1"/>
                                <field name="document_type" readonly='1' invisible='1'/>
                                <field name="handbook_type_id" readonly='0' force_save="1"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="auth_login"/>
                                <field name="email_to"/>
								<field name="view_access" required="1" widget="radio" options="{'horizontal': true}"/>
                                <field name="starting_page_num"/>
                                <field name="ending_page_num"/>
								<field name="employee_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       attrs="{'required': [('view_access', '=', 'Specific')],
                                               'invisible': [('view_access', 'in', ['All','company_specific'])]}"/>
								<field name="company_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       attrs="{'required': [('view_access', '=', 'company_specific')],
                                               'invisible': [('view_access', 'in', ['All','Specific'])]}"/>
                                 <field name="already_seen_boolean" invisible="1"/>
                            </group>
                            <group groups="kw_handbook.group_kw_handbook_manager">
                                <field name="icon"/>
                                <p>(Please upload icon (.jpg , .jpeg , .png) formats only and it should be less than
                                    500kb)
                                </p>
                            </group>
                        </group>


                        <!--  <group>
                             <field name="content_file" string="Attachment" widget="pdf_viewer"  filename="file_name"/>
                         </group>-->

                        <group>
                            <field name="attachment" widget="pdf_viewer" options="{'size': [1000, 1000]}"/>
                        </group>
                        <h2 class="text-center" attrs="{'invisible': [('already_seen_boolean', '=', True)]}">
                            I have read and understood the policy</h2>
                        <br/>
                        <div class="d-flex justify-content-center" attrs="{'invisible': [('already_seen_boolean', '=', True)]}">
                            <button type="object" name="yes_understand" string="Submit" class="btn-success mr-3"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view of kw handbook Ending -->

        <record model="ir.ui.view" id="kw_handbook_template_form_view">
            <field name="name">Kw handbook form view</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="priority" eval="150"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="description"/>
                                <field name="user_ids" widget="many2many_tags" invisible="1"/>
                            </group>
                            <group groups="kw_handbook.group_kw_handbook_manager">
                                <field name="category" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="expires_on" options="{'datepicker':{'minDate': 0}}"/>
                                <field name="posted_on"/>
                                <field name="revised_on" invisible="1"/>
                                <field name="document_type" readonly='1' invisible='1'/>
                                <field name="handbook_type_id" readonly='0' force_save="1"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="auth_login"/>
								<field name="view_access" required="1" widget="radio" options="{'horizontal': true}"/>
								<field name="employee_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       attrs="{'required': [('view_access', '=', 'Specific')],
                                               'invisible': [('view_access', 'in', ['All','company_specific'])]}"/>
								<field name="company_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       attrs="{'required': [('view_access', '=', 'company_specific')],
                                               'invisible': [('view_access', 'in', ['All','Specific'])]}"/>
                                 <field name="already_seen_boolean" invisible="1"/>
                            </group>
                            <group groups="kw_handbook.group_kw_handbook_manager">
                                <field name="icon"/>
                                <p>(Please upload icon (.jpg , .jpeg , .png) formats only and it should be less than
                                    500kb)
                                </p>
                            </group>
                        </group>


                        <group>
                            <field name="attachment" />
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_office_view_kanban_template" model="ir.ui.view">
            <field name="name">Handbook Kanban View</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="arch" type="xml">
                <kanban id="kanban" class="employee-handbook">
                    <field name="icon"/>
                    <field name="id"/>
                    <field name="title"/>
                    <field name="description"/>
                    <field name="category"/>
                    <field name="handbook_type_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click ">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('kw_onboarding_handbook','icon',record.id.raw_value)"
                                                 alt="Image"/>
                                        </div>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown"/>
                                    <div class="col-sm-10">
                                        <div class="oe_kanban_body handbook_body ml-5">
                                            <div align="left">
                                                <big>
                                                    <a type="open"
                                                       style="color: #000; font-size: 14px; font-weight:700;">
                                                        <field name="title"/>
                                                    </a>
                                                </big>
                                            </div>
                                            <div class="oe_kanban_details handbook1">
                                                <p>
                                                    <field name="display_description"/>
                                                </p>
                                                <button name="get_stock_file_template" string="Download" type="object"
                                                        class="btn btn-success  pull-right">Download
                                                </button>
                                                <div class="pull-right mt-2"
                                                     groups="kw_handbook.group_kw_handbook_manager">
                                                    <field name="active" widget="boolean_toggle"/>
                                                </div>
                                               
                                                <t t-if="record.posted_on.raw_value">
                                                    <div class="pull-left mt-2">
                                                        <lable>
                                                            <i class="fa fa-calendar" title="Valid Trough"
                                                               aria-label="Valid Through"/>
                                                        </lable>
                                                        <field name="posted_on"/>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>

                                       
                                    </div>
                                    <div class="oe_clear"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.ui.view" id="kw_handbook_tree_view_template">
            <field name="name">Kw handbook tree view</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="icon" string="Icon" widget="image"
                           options="{'preview_image': 'image_small', 'size': [60, 60]}"/>
                    <field name="title"/>
                    <field name="description"/>
                    <field name="attachment" widget="download_link" filename="title"/>
                    <field name="posted_on"/>
                    <field name="revised_on" invisible="1"/>
                    <field name="active" widget="boolean_toggle" groups="kw_handbook.group_kw_handbook_manager"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
