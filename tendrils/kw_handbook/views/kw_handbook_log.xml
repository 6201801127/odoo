<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_handbook_log_view_form" model="ir.ui.view">
        <field name="name">Handbook Log Form</field>
        <field name="model">kw_handbook</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" import="false">
                <field name="employee_id"/>
                <field name="title"/>
                <field name="handbook_type_id"/>
                <field name="understood"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_kw_handbook_search" model="ir.ui.view">
        <field name="name">view.kw_handbook.search</field>
        <field name="model">kw_handbook</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <group expand="1" string="Group By">
                    <filter string="Title" name="group_by_title" domain="[]" context="{'group_by':'title'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="kw_handbook_log_action" model="ir.actions.act_window">
        <field name="name">Policy Tracker</field>
        <field name="res_model">kw_handbook</field>
        <field name="view_mode">tree,search</field>
        <field name="context">{'search_default_group_by_title': 1}</field>
    </record>

    <menuitem id="kw_handbook_log_menu"
              name="Policy Tracker"
              action="kw_handbook_log_action"
              parent="kw_onboarding_handbook_configuration_menu"
              sequence="2"/>


    <!-- <menuitem
