<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- explicit referenced form view of kw handbook Opening -->
        <record model="ir.ui.view" id="kw_onboarding_attachment_form">
            <field name="name">Kw onboarding attachment form view</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                        });
                    </script>
                    <sheet>
                        <field name="already_seen_boolean" invisible="1"/>
                        <field name="attachment" widget="pdf_viewer" readonly="1" options="{'size': [1000, 1000]}"/>
                        <h2 class="text-center" attrs="{'invisible': [('already_seen_boolean', '=', True)]}">
                            I have read and understood the policy</h2><br/>
                            <div class="d-flex justify-content-center" attrs="{'invisible': [('already_seen_boolean', '=', True)]}">
                                <button type="object" name="yes_understand" string="Submit" class="btn-success"/>
                            </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_onboarding_attachment_form_template">
            <field name="name">Kw onboarding attachment form view</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                        });
                    </script>
                    <sheet>
                        <group>
                            <group>
                                <field name="attachment"  widget="download_link"  readonly="1" options="{'size': [1000, 1000]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
