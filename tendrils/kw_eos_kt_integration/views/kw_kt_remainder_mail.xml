<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kt_remainder_after_two_days_of_rl_approval" model="mail.template">
            <field name="name">KT Reminder : After 2 working days of RL approval</field>
            <field name="model_id" ref="kw_eos_kt_integration.model_kw_kt_view"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${object.applicant_id.parent_id.work_email}</field>
            <field name="email_cc"></field>
            <field name="subject">KT plan for ${object.applicant_id.name} (${object.applicant_id.emp_code}) | Pending | Reminder-1</field>
            <field name="body_html">
                <![CDATA[
                    <tr>
                        <td>
                            <table border="0">
                                <tr>
                                    <td>
                                        <div style="margin-left: 1.2rem;"> 
                                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small> ${object.applicant_id.parent_id.name},</h5>

                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">KT plan is pending for ${object.applicant_id.name} (${object.applicant_id.emp_code}). Please plan to start the KT process.</p>

                                            <br/>
                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">This is a system generated email. Please do not reply to this mail.</p>
                                            
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
 			]]>

            </field>
            <field name="user_signature" eval="False"/>
        </record>

