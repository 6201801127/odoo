<odoo>
	<data>

		<!-- Salary Advance Form View -->
	    <record id="view_salary_advance_form_inherit" model="ir.ui.view">
	        <field name="name">view_salary_advance_form_inherit</field>
	        <field name="model">kw_advance_apply_salary_advance</field>
	        <field name="inherit_id" ref="kw_advance_claim.kw_apply_salary_advance_takeaction_account_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='adv_amnt']" position="after">
	                <field name="account_move_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'invisible': [('state', '!=', 'post')]}" groups="kw_advance_claim.group_kw_advance_claim_account" readonly="1"/>
	            </xpath>
	            <xpath expr="//field[@name='adv_amnt']" position="attributes">
				      <attribute name="attrs">{'readonly':[('state','in', ['grant','release','post'])]}</attribute>
				</xpath>
	        </field>
	    </record>

		<record model="ir.actions.act_window" id="kw_advance_claim.kw_apply_salary_advance_takeaction_account_action">
            <field name="name">Accounts Take Action</field>
            <field name="res_model">kw_advance_apply_salary_advance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state','in',['approve','grant','hold','release','post'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_advance_claim.kw_apply_salary_advance_takeaction_account_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Records to show...
                </p>
            </field>
        </record>


        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_tree_inh">
            <field name="name">kw_adv_apply_petty_cash.tree</field>
            <field name="model">kw_advance_apply_petty_cash</field>
	        <field name="inherit_id" ref="kw_advance_claim.kw_adv_apply_petty_cash_tree"/>
            <field name="arch" type="xml">
	            <xpath expr="//button[@name='get_claim_record']" position="attributes">
				      <attribute name="attrs">{'invisible': ['|','|',('state','not in', ['release','post']),('check_settlement_user','=',False),('hide_btm_claim','=', True)]}</attribute>
				</xpath>
            </field>
        </record>
		<!-- Petty Cash Form View -->
	    <record id="view_petty_cash_form_inherit" model="ir.ui.view">
	        <field name="name">view_petty_cash_form_inherit</field>
	        <field name="model">kw_advance_apply_petty_cash</field>
	        <field name="inherit_id" ref="kw_advance_claim.kw_adv_apply_petty_cash_takeaction_account_form"/>
	        <field name="arch" type="xml">
	        	<group>
	        		<field name="hide_claim_settlement_button" invisible='1'/>
	        	</group>

	            <xpath expr="//field[@name='description']" position="after">
	                <field name="account_move_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'invisible': [('state', '!=', 'post')]}" groups="kw_advance_claim.group_kw_advance_claim_account" readonly="1"/>
	            </xpath>
	            <xpath expr="//field[@name='advance_amt']" position="attributes">
				      <attribute name="attrs">{'readonly':[('state','in', ['grant','release','post'])]}</attribute>
				</xpath>
	            <xpath expr="//field[@name='category_id']" position="attributes">
				      <attribute name="attrs">{'readonly':[('state','in', ['grant','release','post'])]}</attribute>
				</xpath>
	            <xpath expr="//field[@name='claim_type_id']" position="attributes">
				      <attribute name="attrs">{'readonly':[('state','in', ['grant','release','post'])]}</attribute>
				</xpath>
	        </field>
	    </record>

		<record model="ir.actions.act_window" id="kw_advance_claim.kw_adv_apply_petty_cash_account_takeaction">
            <field name="name">Take action</field>
            <field name="res_model">kw_advance_apply_petty_cash</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state','in',['approve','grant','hold','forward_acc','release','post'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_advance_claim.kw_adv_apply_petty_cash_takeaction_account_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Records to take action...
                </p>
            </field>
        </record>

	    <!-- Claim Settlement Form View -->
	    <record id="view_claim_settlement_form_inherit" model="ir.ui.view">
	        <field name="name">view_claim_settlement_form_inherit</field>
	        <field name="model">kw_advance_claim_settlement</field>
	        <field name="inherit_id" ref="kw_advance_claim.kw_adv_claim_settlement_takeaction_account_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='payment_date']" position="after">
	                <field name="account_move_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'invisible': [('state', '!=', 'post')]}" groups="kw_advance_claim.group_kw_advance_claim_account" readonly="1"/>
	            </xpath>
	        </field>
	    </record>

		<record model="ir.actions.act_window" id="kw_advance_claim.kw_adv_claim_settlement_takeaction_account">
            <field name="name">Claim Settlement</field>
            <field name="res_model">kw_advance_claim_settlement</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','in',['approve','grant','hold','forward_acc','release','post'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_advance_claim.kw_adv_claim_settlement_takeaction_account_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
						No Records to show...
                </p>
            </field>
        </record>

	    <!-- Analytic Account Form View -->
	    <record id="claim_type_view_tree" model="ir.ui.view">
	        <field name="name">claim.type.view.tree.inherit</field>
	        <field name="model">kw_advance_claim_type</field>
	        <field name="inherit_id" ref="kw_advance_claim.kw_claim_type_tree"/>
	        <field name="arch" type="xml">
	            <field name="claim_category_id" position="after">
	                <field name="expense_account_id" options='{"no_open": True, "no_create": True}'/>
	            </field>
	        </field>
	    </record>


	    <record id="advance_claim_accounting_configuration_view_tree" model="ir.ui.view">
            <field name="name">advance.claim.accounting.configuration.view.tree</field>
            <field name="model">kw_advance_claim_accounting_configuration</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Account Configuration" editable="top">
                    <field name="name" required='1'/>
	                <field name="code" required='1'/>
	                <field name="account_id" options='{"no_open": True, "no_create": True}' required='1'/>
	                <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="advance_claim_accounting_configuration_action_window" model="ir.actions.act_window">
            <field name="name">Account Configuration</field>
            <field name="res_model">kw_advance_claim_accounting_configuration</field>
            <field name="view_mode">tree</field>
        </record>

