<odoo>
	<data>

		<!-- Salary rule form view -->
	    <record id="view_salary_rule_form_inherit" model="ir.ui.view">
	        <field name="name">view_salary_rule_form_inherit</field>
	        <field name="model">hr.salary.rule</field>
	        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//page[@name='rules']" position="after">
	                <page name="rules" string="Accounting">
	                	<group>
		                	<field name="account_debit"/>
		                	<field name="account_credit"/>
		                	<field name="analytic_account_id"/>
		                </group>	
	                </page>
	            </xpath>
	        </field>
	    </record>

	    <!-- Salary slip form view -->
	    <record id="view_salary_slip_form_inherit" model="ir.ui.view">
	        <field name="name">view_salary_slip_form_inherit</field>
	        <field name="model">hr.payslip</field>
	        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='paid']" position="after">
                	<field name="date"/>
                	<field name="journal_id"/>
                	<field name="move_id" readonly="1"/>
	            </xpath>
	        </field>
	    </record>

	    <record id="res_config_settings_view_form" model="ir.ui.view">
	        <field name="name">res.config.settings.view.form.inherit.payroll</field>
	        <field name="model">res.config.settings</field>
	        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
	        <field name="arch" type="xml">
	          <div id="hr_payroll_accountant" position="after">
	            <div class="row mt16 o_settings_container" id="salary_journal">
	              <div class="col-12 col-lg-6 o_setting_box" title="Salary Journal">
	                <div class="o_setting_right_pane">
	                  <label for="salary_journal_id"/>
	                  <div class="text-muted">
	                    Select salary journal which will be used at the time of posting, when processing multiple payslip.
	                  </div>
	                </div>
	                <div class="o_setting_right_pane">
	                  <field name="salary_journal_id"/>
	                </div>
	              </div>
	            </div>
	          </div>
	        </field>
	    </record>

	    <record id="action_set_batch_payslip_confirm" model="ir.actions.server">
        	<field name="name">Confirm Payslip(s)</field>
        	<field name="type">ir.actions.server</field>
        	<field name="model_id" ref="hr_payroll.model_hr_payslip"/>
        	<field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
        	<field name="state">code</field>
        	<field name="code">records.action_payslip_confirm()</field>
    	</record>

	</data>
</odoo>