<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kw_survey_type_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Survey Types</field>
            <field name="res_model">kw_survey_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <!-- <field name="search_view_id" ref="ir.ui.view" /> -->
        </record>

<!-- Tree view for "model" -->
        <record id="kw_survey_type_tree_view" model="ir.ui.view">
            <field name="name">kw_survey_type.tree</field>
            <field name="model">kw_survey_type</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "model" -->
        <record id="kw_survey_type_form_view" model="ir.ui.view">
            <field name="name">kw_survey_type.form</field>
            <field name="model">kw_survey_type</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline"
                                    placeholder="name" />
                            </h1>
                            <label for="code" class="oe_edit_only" />
                            <h1>
                                <field name="code" class="oe_inline" placeholder="code" />
                            </h1>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_survey_survey_form_inherited">
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                    <label for="survey_type" class="oe_edit_only"/>
                    <h1>
                        <field name="survey_type" placeholder="Survey Type"/>
                    </h1>
                </xpath>
            </field>
        </record>
        <menuitem name="Survey Types" id="kw_survey_type_menu" sequence="5"  action="kwantify.kw_survey_type_act_window" parent="survey.menu_surveys_configuration"/>

        </data>
</odoo>