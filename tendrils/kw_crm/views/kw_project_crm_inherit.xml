<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="kw_crm_lead" model="ir.ui.view">
            <field name="name">CRM lead Inherited Form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_set_lost']" position="after">
                    <field name="state" widget="statusbar"/>
                </xpath>

                <xpath expr="//button[@name='action_set_lost']" position="after">
                    <button name="apply_pac_button" string="Apply for PAC" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('probability', '=', 0),('state','in',['Hold','PAC Applied','Rejected','PAC Approved'])]}"/>
                    <button name="%(crm.action_crm_lead2opportunity_partner)d" string="Grant" type="action"
                            help="Convert to Opportunity" class="oe_highlight"
                            attrs="{'invisible': [('type', '=', 'opportunity'),('state','in',['Draft','Hold','PAC Approved','Rejected'])]}"
                            groups='kw_project.project_group_pac_users'/>
                    <button name="withdraw_pac_button" string="Revised" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('probability', '=', 0),('state','in',['Hold','PAC Approved','Rejected','Draft'])]}"
                            groups='kw_project.project_group_pac_users'/>
                    <button name="hold_pac_button" string="Hold" type="object" class="btn btn-warning"
                            attrs="{'invisible': ['|', ('probability', '=', 0),('state','in',['Hold','PAC Approved','Rejected','Draft'])]}"
                            groups='kw_project.project_group_pac_users'/>
                    <button name="reject_pac_button" string="Reject" type="object" class="btn btn-danger"
                            attrs="{'invisible': ['|', ('probability', '=', 0),('state','in',['Hold','PAC Approved','Draft','Rejected'])]}"
                            groups='kw_project.project_group_pac_users'/>
                </xpath>
                <xpath expr="//button[@name='action_set_lost']" position="replace">
                </xpath>
                <xpath expr="//button[@name='%(crm.action_crm_lead2opportunity_partner)d']" position="replace">
                </xpath>
                <xpath expr="//group/group/field[@name='mobile']" position="after">
                    <field name="project_id"/>
                    <field name="category_id" options="{'no_create_edit': True,'no_open':True,'no_create':True}"
                           domain="[('project_id','=', project_id)]"/>
                    <field name="competitor_id"/>
                </xpath>

                <xpath expr="//group" position="attributes">
                    <attribute name="string">Customer Information</attribute>
                </xpath>
                <xpath expr="//group" position="after">
                    <group string='Lead information'>
                        <group>
                            <field name="country_id"
                                   options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="state_id" string='State and UT'
                                   options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="client_name"/>
                            <field name="type_of_lead"/>
                            <field name="name_of_lead"/>
                            <field name="tender_number"/>
                            <field name="tender_date"/>
                        </group>
                        <group>
                            <field name="pre_bid_date"/>
                            <field name="submission_date"/>
                            <field name="gen_bid_opening_date"/>
                            <field name="tech_bid_date"/>
                            <field name="financial_opening_date"/>
                            <field name="document_type"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="kw_crm_opportunity_lead" model="ir.ui.view">
            <field name="name">CRM lead opportunity Inherited Form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <group string='Lead information'>
                        <group>
                            <field name="country_id"
                                   options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="state_id" string='State and UT'
                                   options="{'no_create_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="client_name"/>
                            <field name="type_of_lead"/>
                            <field name="name_of_lead"/>
                            <field name="tender_number"/>
                            <field name="tender_date"/>
                        </group>
                        <group>
                            <field name="pre_bid_date"/>
                            <field name="submission_date"/>
                            <field name="gen_bid_opening_date"/>
                            <field name="tech_bid_date"/>
                            <field name="financial_opening_date"/>
                            <field name="document_type"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_list_inherit" model="ir.ui.view">
            <field name="name">crm_lead_tree_view_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
