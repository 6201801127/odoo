    </record> -->
    <record id="kw_traineeship_manager_rule" model="ir.rule">
        <field name="name">All record</field>
        <field ref="model_lk_batch" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_manager_internship_program'))]"/>
    </record>


</odoo>
