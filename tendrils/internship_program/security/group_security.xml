<odoo>
    <record model="ir.module.category" id="module_internship_program">
        <field name="name">Internship Program</field>
        <field name="description">Help You For</field>
        <field name="sequence">23</field>
    </record>

    <record id="group_manager_internship_program" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_internship_program"/>
    </record>

    <record id="group_rh_internship_program" model="res.groups">
        <field name="name">Resource Head</field>
        <field name="category_id" ref="module_internship_program"/>
    </record>
    <record id="group_mis_internship_program" model="res.groups">
        <field name="name">MIS User</field>
        <field name="category_id" ref="module_internship_program"/>
    </record>

    <record id="kw_traineeship_rh_rule" model="ir.rule">
        <field name="name">RH All applied record</field>
        <field ref="model_lk_batch_details" name="model_id"/>
        <field name="domain_force">['|','|','|',('traineeship_status','not like','%In Progress'),('traineeship_status','like','%Approved'),('internship_status','not like','%In Progress'),('internship_status','like','%Approved')]</field>
        <field name="groups" eval="[(4, ref('group_rh_internship_program'))]"/>
    </record>
