<odoo>
    <data>
        <record id="list_internship_program_report" model="ir.ui.view">
            <field name="name">internship program report list view</field>
            <field name="model">internship_program_report</field>
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="financial_year_id"/>
                    <field name="batch_name"/>
                    <field name="date_of_joining"/>
                    <field name="location"/>
                    <field name="employee_name"/>
                    <field name="employee_code"/>
                    <field name="job_id"/>
                    <field name="foundation_program_status"/>
                    <field name="foundation_program_score"/>
                    <field name="foundation_completion_date"/>
                    <field name="internship_program_status"/>
                    <field name="internship_program_score"/>
                    <field name="internship_completion_date"/>
                </tree>
            </field>
        </record>
        <record id="list_internship_program_report_search_view" model="ir.ui.view">
            <field name="name">internship program report search_view</field>
            <field name="model">internship_program_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="financial_year_id"/>
                    <field name="batch_name" filter_domain="[('batch_name','ilike',self)]"/>
                    <field name="date_of_joining"/>
                    <field name="location"/>
                    <field name="employee_name"/>
                    <field name="employee_code"/>
                    <field name="job_id"/>
                    <field name="foundation_program_status"/>
                    <field name="internship_program_status"/>
                    <filter name="fiscalyr_filter" string="Current Financial Year" 
                            domain="['&amp;',('financial_year_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('financial_year_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                            context="{}" readonly="1"/>
                    <separator/>
                   
                    <filter name="foundation program status1"
                            string="Foundation Continue"
                            domain="[('foundation_program_status','=','Continuing')]" />
                    <filter name="foundation program status2"
                            string=" Foundation Complete"
                            domain="[('foundation_program_status','=','Completed')]" />
                    <filter name="foundation program status3"
                            string="Foundation Hold"
                            domain="[('foundation_program_status','=','Hold')]" />
                    <filter name="foundation program status4"
                            string="Foundation Close"
                            domain="[('foundation_program_status','=','Close')]" />
                    <separator/>
                   
                    <filter name="Internship program status1"
                            string="Internship Continue"
                            domain="[('internship_program_status','=','Continuing')]" />
                    <filter name="Internship program status2"
                            string="Internship Complete"
                            domain="[('internship_program_status','=','Completed')]" />
                    <filter name="Internship program status3"
                            string="Internship Hold"
                            domain="[('internship_program_status','=','Hold')]" />
                    <filter name="Internship program status4"
                            string="Internship Close"
                            domain="[('internship_program_status','=','Close')]" />
                    <separator/>
                    <!-- <filter name="fiscalyr_filter" string="Current Fiscal Year" 
				domain="['&amp;',('fiscalyr.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscalyr.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
				context="{}" readonly="1"/> -->
                </search>
            </field>
        </record>
        
        <record id="action_internship_program_report" model="ir.actions.act_window">
            <field name="name">Internship Program Report</field>
            <field name="res_model">internship_program_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_fiscalyr_filter': 1}</field>
            <field name="search_view_id" ref="list_internship_program_report_search_view"/>
<!--            <field name="domain">[('internship_completion_details_ids.internship_status','in',['Approved'])]</field>-->
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('list_internship_program_report')})]"/>
<!--,-->
<!--            (0, 0, {'view_mode': 'form', 'view_id': ref('payroll_revise_internship_form')})-->
        </record>

        <menuitem name="Report"
                  id="menu_internship_program_report"
                  parent="l_k_menu_root"
                  sequence="5"
                  action="action_internship_program_report"/>
    </data>
</odoo>