<odoo>
    <data>
        <record model="ir.ui.view" id="internship_details_list">
            <field name="name">lk_batch_internship_list</field>
            <field name="model">lk_batch</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="financial_year_id"/>
                    <field name="name"/>
                    <field name="mrf_id"/>
                    <field name="internship_completion_details_ids" string="No of Employees"/>
                </tree>
            </field>
        </record>


        <record id="learning_and_knowledge_internship_form" model="ir.ui.view">
            <field name="name">lk_batch_internship_form_view</field>
            <field name="model">lk_batch</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <!-- <button string="Apply for All" name="action_apply_internship_all_manager"
                                type="object" context="{'current_id':id,'button':'Complete_all_internship'}"
                                attrs="{'invisible':['|',('state','in',['confirm','approve']),('rh_check_bool','=',True)]}"
                                class="btn-primary"
                                groups="internship_program.group_manager_internship_program"/> -->
                        <button string="Notify to RH" name="action_notify_to_rh_internship_approve"
                                type="object" 
                                attrs="{'invisible':[('rh_check_bool','=',True)]}"
                                class="btn-primary"
                                groups="internship_program.group_manager_internship_program"/>
                        <button string="Approve All" name="get_approve_all_internship" type="object"
                                class="btn-success"
                                context="{'current_id': id,'button':'approve_all_rh_internship'}"
                                groups="internship_program.group_rh_internship_program"/>
                        <button string="Notify to Manager" name="action_notify_to_manager_internship_approve"
                                type="object" 
                                attrs="{'invisible':[('rh_check_bool','!=',True)]}"
                                class="btn-primary"/>
                        <button name="action_internship_apply_all_managers" string="Internship Take Action" type="object" class="btn-primary"
                                context="{'current_record': id,'button':'internship_apply_all'}"
                                attrs="{'invisible':[('rh_check_bool','=',True)]}"
                              />
                        <button name="action_internship_approve_all_managers" string="Internship Batch Take Action" type="object" class="btn-primary"
                                context="{'current_record': id,'button':'internship_approve_all'}"
                                attrs="{'invisible':[('rh_check_bool','=',False)]}"
                              />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>

                                <field name="financial_year_id" readonly="1" string='Financial Year'
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="name" readonly="1"/>
                                <field name="mrf_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="rh_check_bool" invisible="1"/>
                            </group>
                            <group>
                            </group>

                        </group>
                        <group string="Internship Details">
                            <field name="internship_completion_details_ids" required="1"
                            >
                                <tree editable="bottom" delete="false" create="false" decoration-warning="internship_status=='Applied'" decoration-danger="internship_status=='Rejected'" decoration-success="internship_status == 'Approved'">
                                    <field name="internship_id" invisible="1"/>
                                    <field name="rh_check" invisible="1"/>
                                    <field name="employee_id" invisible="1"
                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="employee_name"/>
                                    <field name="employee_code"/>
                                    <field name="deg_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="doj" string="Date of joining"/>
                                    <field name="internship_applied_date" invisible="1"/>
                                    <field name="internship_completion_date" invisible="1"/>
                                    <field name="internship_score"
                                           attrs="{'readonly':[('internship_status','=','Approved')]}"/>
                                    <field name="internship_comments_applied" attrs="{'readonly':True}"
                                           force_save="true"/>
                                    <field name="internship_comments_approved"
                                           attrs="{'readonly':[('rh_check','=',False)]}"/>
                                    <field name="internship_status" readonly="1"/>
                                    <field name="hide_button_intern_compl" invisible="1"/>
                                    <field name="internship_complete_check" invisible="1"/>

                                    <button name="internship_completion_check" class="oe_highlight btn btn-primary" type="object"
                                            attrs="{'invisible':['|',('internship_status','in',['Applied','Approved','Payroll revised','Rejected']),('rh_check','=',True)]}"
                                            string="Apply Completion"/>
                                    <button name="internship_approved_by_rh" class="btn btn-success" type="object"
                                            string="Approve"
                                            attrs="{'invisible':['|','|',('rh_check','=',False),('internship_complete_check','=',True),('internship_status','in',['In Progress','Rejected','Approved'])]}"
                                            groups="internship_program.group_rh_internship_program"
                                            context="{'current_record':id,'button':'approve_rh_internship'}"/>
                                    <button name="internship_approved_by_rh" class="btn btn-danger" type="object"
                                            string="Reject"
                                            attrs="{'invisible':['|','|',('rh_check','=',False),('internship_complete_check','=',True),('internship_status','in',['In Progress','Rejected','Approved'])]}"
                                            groups="internship_program.group_rh_internship_program"
                                            context="{'current_record':id,'button':'reject_rh_internship'}"/>

                                </tree>
                                <form>
                                    <group>
                                        <field name="employee_name"/>
                                        <field name="employee_code"/>
                                        <field name="internship_status" invisible="1"/>
                                        <field name="deg_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="doj" string="Date of joining"/>
                                        <field name="internship_applied_date" invisible="1"/>
                                        <field name="internship_completion_date" invisible="1"/>
                                        <field name="internship_score"
                                            attrs="{'readonly':[('internship_status','=','Approved')]}"/>
                                    </group>
                                </form>

                            </field>
                            <group>
                            </group>
                            <group>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="learning_and_knowledge_internship_action_window">
            <field name="name">Internship Program</field>
            <field name="res_model">lk_batch</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('internship_details_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('learning_and_knowledge_internship_form')})]"/>

        </record>

        <record model="ir.actions.act_window" id="lk_rh_internship_action_window">
            <field name="name">Internship Program</field>
            <field name="res_model">lk_batch</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">['|',('internship_completion_details_ids.internship_status','in',['Applied']),('internship_completion_details_ids.internship_status','not in',['In Progress'])]</field>
            <field name="context">{'create': False,'edit':False,'delete':False}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('internship_details_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('learning_and_knowledge_internship_form')})]"/>

        </record>


        <menuitem name="Batches"
                  id="l_k_internship_batches2"
                  action="learning_and_knowledge_internship_action_window"
                  parent="l_k_details_menu2"
                  groups="internship_program.group_manager_internship_program"
                  sequence="1"/>

        <menuitem name="Take action"
                  id="l_k_batches3"
                  action="lk_rh_internship_action_window"
                  groups="internship_program.group_rh_internship_program"
                  parent="l_k_details_menu2"
                  sequence="2"/>


    </data>
</odoo>
