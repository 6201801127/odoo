<odoo>
    <data>
        <record id="remarks_manager_view_form" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">traineeship_submit_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                                Are you sure, you want to Approve this application?
                            </p>
                            <group>
                                <field name="score_traineeship" required="1"/>
                                <field name="remark" required="1"/>
                                <field name="batch_lk_id" invisible="1"/>
                            </group>

                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="action_done"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="remarks_rh_view_form" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">traineeship_submit_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                                Are you sure, you want to Approve this application?
                            </p>
                            <field name="remark" required="1"/>
                            <field name="l_k_batch_id" invisible="1"/>
                            <field name="batch_lk_id" invisible="1"/>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="action_done"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="remarks_rh_reject_view_form" model="ir.ui.view">
            <field name="name">Reject</field>
            <field name="model">traineeship_submit_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">

                            <p style="font-size : 20px; text-align: center;">
                                Are you sure, you want to Reject this application?
                            </p>

                            <field name="remark" required="1"/>
                            <field name="l_k_batch_id" invisible="1"/>
                            <field name="batch_lk_id" invisible="1"/>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="action_done"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="employee_take_action_view_form" model="ir.ui.view">
            <field name="name">employee_take_action_wizard</field>
            <field name="model">employee_take_action_wizard</field>
            <field name="arch" type="xml">
                <form string="Take Action">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_ids" nolabel="1">
                                    <tree create="false" delete="true">
                                        <field name="employee_name"/>
                                        <field name="employee_code"/>
                                        <field name="deg_id"/>
                                        <field name="department_id"/>
                                        <field name="new_dept_id"/>
                                        <field name="new_division_id"/>
                                        <field name="doj"/>
                                        <field name="increment_pattern"/>
                                        <field name="traineeship_score"/>
                                        <field name="traineeship_comments_applied"/>
                                        <field name="traineeship_comments_approved"/>
                                        <field name="traineeship_status"/>
                                    </tree>

                                    <form>
                                        <group>
                                            <field name="employee_name" readonly='1'/>
                                            <field name="employee_code" readonly='1'/>
                                            <field name="deg_id" readonly='1'
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="department_id" readonly='1'
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="new_dept_id" readonly='1'
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="new_division_id" readonly='1'
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="doj" readonly='1'
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="increment_pattern" readonly='1'/>
                                            <field name="traineeship_score" readonly='1'/>
                                            <field name="traineeship_comments_applied" readonly='1'/>
                                            <field name="traineeship_comments_approved" readonly='1'/>
                                            <field name="traineeship_status" readonly='1'/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                            <group>
                                <field name="new_dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       attrs="{'invisible':[('rh_take_action','=',False)],'required':[('rh_take_action','=',True)]}"/>
                                <field name="new_division_id"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       attrs="{'invisible':[('rh_take_action','=',False)],'required':[('rh_take_action','=',True)]}"/>
                                <field name="traineeship_comments_applied" invisible="1"/>
                                <field name="rh_check" invisible="1 "/>
                                <!-- <field name="traineeship_status" invisible="1"/> -->
                                <field name="rh_take_action" invisible="1"/>
                                <field name="remark"
                                       attrs="{'invisible':[('rh_take_action','=',True)],'required':[('rh_take_action','=',False)]}"/>
                            </group>
                            <group>
                                <field name="increment_pattern" widget="radio" options="{'horizontal': true}"
                                       attrs="{'invisible':[('rh_take_action','=',False)]}"/>
                                <field name="traineeship_score" attrs="{'invisible':[('rh_take_action','=',False)]}"/>
                                <!-- <field name="hide_btn_applied" invisible="1"/> -->
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="training_completion_btn" class="oe_highlight btn btn-success" type="object"
                                string="Apply Completion"
                                attrs="{'invisible':[('rh_check','=',True)]}"/>
                        <button name="traineeship_approved_btn" class="oe_highlight" type="object"
                                string="Approve"
                                groups="internship_program.group_rh_internship_program"
                                confirm="Are you sure, you want to approve?"/>
                        <button name="traineeship_rejected_btn" class="btn-danger" type="object"
                                string="Reject"
                                groups="internship_program.group_rh_internship_program"
                                confirm="Are you sure, you want to reject?"/>
                    </footer>
                    <!-- attrs="{'invisible':['|',('rh_check','=',False),('traineeship_status','in',['Rejected','Approved'])]}" -->
                    <!-- attrs="{'invisible':['|',('hide_button_applied','=',True),('rh_check','=',True)]}" -->

                </form>
            </field>
        </record>

        <record id="action_employee_take_action_wizard" model="ir.actions.act_window">
            <field name="name">Take Action</field>
            <field name="res_model">employee_take_action_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employee_take_action_view_form"/>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('employee_take_action_view_form')})]"/>
        </record>

        <record id="employee_dept_change_view_form" model="ir.ui.view">
            <field name="name">employee department Change View</field>
            <field name="model">employee_take_action_wizard</field>
            <field name="arch" type="xml">
                <form string="Take Action">
                    <sheet>
                        <group>
                            <field name="employee_ids" nolabel="1">
                                <tree create="false" delete="true">
                                    <field name="employee_name"/>
                                    <field name="employee_code"/>
                                    <field name="deg_id"/>
                                    <field name="department_id"/>
                                    <field name="traineeship_status"/>
                                </tree>

                                <form>
                                    <group>
                                        <field name="employee_name" readonly='1'/>
                                        <field name="employee_code" readonly='1'/>
                                        <field name="deg_id" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="department_id" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="traineeship_status" readonly='1'/>
                                    </group>
                                </form>
                            </field>
                            <group>
                                <field name="training_completion_date"/>
                                <field name="new_dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       required="1"/>
                                <field name="new_division_id"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                                <field name="remark" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="training_completion_department_btn" class="oe_highlight btn btn-success"
                                type="object" string="Change Department"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="employee_traineeship_date_change_view_form" model="ir.ui.view">
            <field name="name">employee traineeship Change View</field>
            <field name="model">employee_take_action_wizard</field>
            <field name="arch" type="xml">
                <form string="Take Action">
                    <sheet>
                        <group>
                            <field name="employee_ids" nolabel="1">
                                <tree create="false" delete="true">
                                    <field name="employee_name"/>
                                    <field name="employee_code"/>
                                    <field name="deg_id"/>
                                    <field name="department_id"/>
                                    <field name="traineeship_status"/>
                                </tree>

                                <form>
                                    <group>
                                        <field name="employee_name" readonly='1'/>
                                        <field name="employee_code" readonly='1'/>
                                        <field name="deg_id" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="department_id" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="traineeship_status" readonly='1'/>
                                    </group>

                                </form>
                            </field>
                            <group>
                            </group>
                            <group>
                            </group>
                            <group>
                                <field name="trainee_date" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="training_completion_date_btn" class="oe_highlight btn btn-success" type="object"
                                string="Update Date"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="internship_program_take_action_view_form" model="ir.ui.view">
            <field name="name">internship_program_take_action_view_form</field>
            <field name="model">employee_take_action_wizard</field>
            <field name="arch" type="xml">
                <form string="Take Action">
                    <sheet>
                        <group>
                            <field name="employee_ids" nolabel="1">
                                <tree create="false" delete="true">
                                    <field name="employee_name"/>
                                    <field name="employee_code"/>
                                    <field name="deg_id"/>
                                    <field name="doj"/>
                                    <field name="internship_score"/>
                                    <field name="internship_comments_applied"/>
                                    <field name="internship_comments_approved"/>
                                    <field name="internship_status"/>

                                </tree>

                                <form>
                                    <group>
                                        <field name="employee_name" readonly='1'/>
                                        <field name="employee_code" readonly='1'/>
                                        <field name="deg_id" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="doj" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="internship_score" readonly='1'/>
                                        <field name="internship_comments_applied" readonly='1'/>
                                        <field name="internship_comments_approved" readonly='1'/>
                                        <field name="internship_status" readonly='1'/>
                                    </group>

                                </form>
                            </field>
                        </group>
                        <group>
                            <group>
                                <field name="internship_score"
                                       attrs="{'invisible':[('internship_take_action','=',False)]}" required='1'/>
                                <field name="rh_internship_check" invisible="1"/>
                                <field name="internship_take_action" invisible="1"/>
                                <field name="internship_comments_applied" invisible='1'/>

                                <field name="remark"
                                       attrs="{'invisible':[('internship_take_action','=',True)],'required':[('internship_take_action','=',False)]}"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>

                        <button name="internship_completion_btn" class="oe_highlight btn btn-success" type="object"
                                string="Apply Completion"
                                attrs="{'invisible':[('rh_internship_check','=',True)]}"/>
                        <button name="internship_approved_btn" class="oe_highlight" type="object"
                                string="Approve"
                                groups="internship_program.group_rh_internship_program"
                                confirm="Are you sure, you want to approve?"
                                context="{'current_record':id,'button':'internship_approve_button'}"/>
                        <button name="internship_rejected_btn" class="btn-danger" type="object"
                                string="Reject"
                                groups="internship_program.group_rh_internship_program"
                                confirm="Are you sure, you want to reject?"
                                context="{'current_record':id,'button':'internship_rejected_button'}"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="internship_program_take_action_wizard" model="ir.actions.act_window">
            <field name="name">Take Action</field>
            <field name="res_model">employee_take_action_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="internship_program_take_action_view_form"/>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('internship_program_take_action_view_form')})]"/>
        </record>

        <record id="traineeship_program_payrevies_view_form" model="ir.ui.view">
            <field name="name">traineeship_program_pay_revies_view_form</field>
            <field name="model">employee_take_action_wizard</field>
            <field name="arch" type="xml">
                <form string="Take Action">
                    <sheet>
                        <group>
                            <field name="employee_ids" domain="[('traineeship_status', '=', 'Approved')]">
                                <tree delete="true">
                                    <field name="employee_name"/>
                                    <field name="employee_code"/>
                                    <field name="deg_id"/>
                                    <field name="doj"/>
                                    <field name="traineeship_score"/>
                                    <field name="traineeship_current_ctc"></field>
                                    <field name="traineeship_emp_basic"></field>
                                    <field name="traineeship_emp_hra"></field>
                                    <field name="traineeship_emp_conv"></field>
                                    <field name="traineeship_emp_pb"></field>
                                    <field name="traineeship_emp_cb"></field>
                                    <field name="traineeship_status"/>

                                </tree>

                                <form>
                                    <group>
                                        <field name="employee_name" readonly='1'/>
                                        <field name="employee_code" readonly='1'/>
                                        <field name="deg_id" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="doj" readonly='1'
                                               options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="traineeship_score" readonly='1'/>
                                        <field name="traineeship_status" readonly='1'/>
                                    </group>

                                </form>
                            </field>
                        </group>
                    </sheet>
                    <footer>

                        <button name="traineeship_pay_revies_btn" class="oe_highlight btn btn-success" type="object"
                                string="All Pay Revise" confirm="Are you sure, you want to Pay revise to All Employee?"
                        />
                        <button string="Cancel" class="btn-danger" special="cancel" style="margin-left: 5px;"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>