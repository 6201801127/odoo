        <template id="add_attribute_main" inherit_id="website.layout">
            <xpath expr="//main" position="attributes">
                <attribute name="class">bg_gradient</attribute>
            </xpath>
        </template>

        <!-- inherited fields from addons -->

        <template id="auth_signup.fields" name="Auth Signup/ResetPassword form fields">
            
            
            
            <div class="form-group field-login">
               <label for="login" class="name-header">Your Email</label>
                 <div class="md-form input-group m-1">
                    <div class="boxed-input input-group-append">
                       <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus"
                        autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                    </div>
                </div>
            </div>


             <div class="form-group field-name">
                <label for="name" class="name-header">Your Name</label>
                  <div class="md-form input-group m-1">
                     <div class="boxed-input input-group-append">
                        <input type="text" name="name" t-att-value="name" id="name" class="form-control" placeholder="e.g. John Doe"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                     </div>
                 </div>
             </div>


             <div class="form-group field-password pt-1">
                <label for="password" class="name-header">Password</label>
                  <div class="md-form input-group m-1">
                     <div class="boxed-input input-group-append">
                        <input type="password" name="password" id="password" class="form-control"
                        required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
                     </div>
                 </div>
             </div>

             <div class="form-group field-confirm_password">
                <label for="confirm_password" class="name-header">Confirm Password</label>
                  <div class="md-form input-group m-1">
                     <div class="boxed-input input-group-append">
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" required="required"/>
                     </div>
                 </div>
             </div>

