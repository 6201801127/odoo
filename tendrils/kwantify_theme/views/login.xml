        <template id="tendrils_login_layout" name="Tendrils Login Layout" inherit_id="web.login">
            <xpath expr="//form" position="replace">
                <div class="login_section">
               <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 col-lg-6  login_logo">
                        <a href="/" class="navbar-brand logo">
                            <img class="tebdrils_image" src="/kwantify_theme/static/src/img/tendrils_logo.png" role="img" alt="Tendrils Logo"
                            title="CSM Technologies Pvt. Ltd."/>
                        </a>
                      <p class="login_content desk_content">Unauthorized exchange of Tendrils and Office email credentials leading to malpractices and misuse will be treated as act of indiscipline and action will be taken on parties involved in the exchange.</p>
                    </div> 
                    <div class="col-xl-6 col-lg-6">
                        <div class="card login_form">
                            <div class="card-body">
                        <form class=""  id="login_form" role="form" t-attf-action="/web/login{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                            <div>
                                <span class="name-header">Username</span>
                            </div>
                            <div class="md-form input-group mt-1 mb-4">
                               
                                <div class="boxed-input input-group-append">
                                    <input  name="login" t-att-value="login" class="form-control" id="login" required="required" autocapitalize="off" autocomplete="off" placeholder="Enter Your Username"/>
                                </div>
                            </div>
                            <div>
                                <span class="name-header">Password</span>
                            </div>
                            <div class="md-form input-group mt-1 mb-3">
                               
                                <div class="boxed-input input-group-append">
                                    <input type="password" name="password" id="password" required="required" class="form-control" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096" placeholder="Enter Your Password"/>
                                    <i id="togglePassword" class="input-group-text md-addon passwordToggle active icon-eye" style="cursor: pointer;"></i>
                                </div>
                                <script>
                                    const togglePassword = document.querySelector('#togglePassword');
                                    const password = document.querySelector('#password');
                                    togglePassword.addEventListener('click', function () {
                                        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                                        password.setAttribute('type', type);
                                        if (type === 'password') {
                                            togglePassword.classList.remove('icon-eye-off');
                                            togglePassword.classList.add('icon-eye');
                                        } else {
                                            togglePassword.classList.remove('icon-eye');
                                            togglePassword.classList.add('icon-eye-off');
                                        }
                                    });
                                </script>
                                
                            </div>

                           <div class="d-flex justify-content-end">
                           <!-- <div class="name-header"> <input  type="checkbox" name="login" class="kw_check" t-att-value="login" /> 
                            Remember Me</div> -->
                           <div > <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}"> <span class="name-header"> Forgot Password? </span> </a></div>
                           </div>


                           
                            <div class="input-group sign_button">
                                <button type="button"  class="loginButton w-100" id='login_option_button' style="text-align: center;">Sign In</button>
                            </div>
                            <p class="alert alert-danger  mr-0 text-center" t-if="password_expired" role="alert">
                                <t t-raw="password_expired_message" />
                            </p>
                            <p class="alert alert-danger  mr-0 text-center" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                            <p class="alert alert-success text-center" t-if="message" role="status">
                                <t t-esc="message"/>
                            </p>
                            <input id="hidden_field_val" type="hidden" t-att-value="key" t-att-style="{'display': 'none'}"/>
                            
                        </form>
                    </div>
                    </div>

                    <p class="login_content mob_content">Unauthorized exchange of Tendrils and Office email credentials leading to malpractices and misuse will be treated as act of indiscipline and action will be taken on parties involved in the exchange.</p>
                    </div>
                </div>
               </div>
            </div>
