<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id='tendrils_nab_bar' inherit_id="website.layout" customize_show="True" name="Show CSM Logo">
            <xpath expr="//header//a[hasclass('navbar-brand')]" position="replace">
                
            </xpath>
        </template>

        
        <template id="tendrils_footer_template" name="Tendrils Footer" inherit_id="website.layout">
            <xpath expr="//footer" position="replace">
                <footer class="site-footer">
                    <div>
                       <p class="">Copyright Â©  <a href="https://www.csm.tech" class="csm-link"> CSM Technologies Pvt. Ltd.</a></p>
                    </div>
                    <div>
                        <ul class="social-icons social-icons-wrapper">
                            <li>Follow Us On:</li>
                            <li><a class="facebook" t-if="website.company_id.social_facebook" t-att-href="website.company_id.social_facebook" target="_blank"> <img src="/kwantify_theme/static/src/img/facebook.png" title="Facebook"/></a></li>
                            <li><a class="twitter" t-if="website.company_id.social_twitter" t-att-href="website.company_id.social_twitter" target="_blank"> <img src="/kwantify_theme/static/src/img/twitter.png" title="X-twitter"/></a></li>
                            <li><a class="instagram" t-if="website.company_id.social_instagram" t-att-href="website.company_id.social_instagram" target="_blank"> <img src="/kwantify_theme/static/src/img/instagram.png" title="Instagram"/></a></li>
                            <li><a class="linkedin" t-if="website.company_id.social_linkedin" t-att-href="website.company_id.social_linkedin" target="_blank"> <img src="/kwantify_theme/static/src/img/linkdin.png" title="Linkdin"/></a></li>
                            <li><a class="youtube" t-if="website.company_id.social_youtube" t-att-href="website.company_id.social_youtube" target="_blank"> <img src="/kwantify_theme/static/src/img/youtube.png" title="Youtube"/></a></li>
                        </ul> 
                    </div>

                </footer>


            </xpath>
        </template>

    </data>
</odoo>