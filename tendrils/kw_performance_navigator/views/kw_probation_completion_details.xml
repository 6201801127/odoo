<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- assessment_completion_details tree view -->
        <record id="assessment_completion_details_view_tree" model="ir.ui.view">
            <field name="name">assessment_completion_details.view.tree</field>
            <field name="model">assessment_completion_details</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="emp_code"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="department_id"/>
                    <field name="division_id"/>
                    <field name="job_id"/>
                    <field name="probation_completion_date"/>
                    <button name="send_reminder_mail" type="object" string="Send Mail" class="btn btn-primary"/>
                    <field name="assessment_complete_boolean" invisible="1"/>
                    <field name="mail_from_time" invisible="1"/>
                    <field name="mail_to_time" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="assessment_completion_details_action" model="ir.actions.server">
            <field name="name">Assessment Completion Details</field>
            <field name="model_id" ref="model_assessment_completion_details" />
            <field name="state">code</field>
            <field name="code">
                    action = model.view_assessment_details()
            </field>
      </record>
    </data>
</odoo>