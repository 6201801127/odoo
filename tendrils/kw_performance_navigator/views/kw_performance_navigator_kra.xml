<odoo>
    <data>
        <record id="kw_performance_navigator_emp_kra_tree" model="ir.ui.view">
			<field name="name">Employee kra tree</field>
			<field name="model">kw_empl_apprasial_kra</field>
			<field name="arch" type="xml">
				<tree import='false' create='false' class='customer_tree'>
					<field name="emp_id" class='text-info font-weight-bold' invisible="1"/>
                    <field name="appraisal_period"/>
					<field name="emp_code" />
					<field name="name" />
                    <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                    <field name="division" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="job_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
					<field name="emp_pl_id" string="KRA Template"/>
                    <!-- <field name="survey_id"/> -->
                    <button name="get_emp_kra_details" string="View Details" class="btn-primary" type="object"/>
				</tree>
			</field>
		</record>

        

        <record model="ir.actions.act_window" id="kw_performance_navigator_kra_action_window">
            <field name="name">My Team Member KRA</field>
            <field name="res_model">kw_empl_apprasial_kra</field>
            <field name="view_mode">tree</field>
            <!-- <field name="domain">[]</field> -->
            <field name="context">{'type':'view','edit':False}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_performance_navigator_emp_kra_tree')}),]"/>
            <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face">
                        No records to view...
                    </p>
            </field>
        </record>
           
           <!--======================== KRA details============= -->

        <record id="kw_performance_navigator_employee_kra_tree" model="ir.ui.view">
            <field name="name">Employee Details kra tree</field>
            <field name="model">kw_empl_apprasial_details_kra</field>
            <field name="arch" type="xml">
                <tree create='false' import='false' class='customer_tree' edit='0' delete='0'>
                    <field name="emp_pl_id" invisible="1"/>
                    <field name="survey_qus" string='KRA (Key Responsibility Area)'/>
                    <field name="survey_indicate" string='KPI (Key Performance Indicator)'/>
                    <field name="question_min_value" invisible="1"/>
                    <field name="question_max_value" invisible="1"/>
                </tree>
                            
            </field>
        </record>
            <!-- ###### MY KRA ######### -->


        <record id="kw_performance_navigator_create_kra_tree" model="ir.ui.view">
			<field name="name">Employee kra tree</field>
			<field name="model">kw_appraisal_kra_emp</field>
			<field name="arch" type="xml">
				<tree import='false' create='false' class='customer_tree'>
					<field name="emp_id" class='text-info font-weight-bold'/>
                    <field name="kw_survey_id" string="KRA Template" force_save='1'/>
                    <button name="get_view_kra_appraisal" string="View" type="object" class="btn-info"/>
                   
				</tree>
			</field>
		</record>
        <!-- ANOTHER ONE====================== -->
        <record id="kw_performance_navigator_assign_kra_tree" model="ir.ui.view">
			<field name="name">Employee kra tree</field>
			<field name="model">kw_appraisal_kra_emp</field>
			<field name="arch" type="xml">
				<tree import='false' create='false' class='customer_tree'>
                    <field name="appraisal_period"/>
					<field name="emp_id" class='text-info font-weight-bold' invisible='1'/>
                    <field name="emp_code"/>
                    <field name="name"/>
                    <field name="kw_survey_id" string="KRA Template" />
                    <field name="kra_create_bool" invisible="1"/>
                    <field name="kra_agree_or_disagree" invisible="1"/>
                    <field name="assign_template_kra_not_appraisal" invisible="1"/>
                    <field name="status" invisible='1'/>
                    <button name="get_view_kra_appraisal" string="View Details" type="object" class="btn-info"/>
                    <button name="get_emp_agree_appraisal" string="Agree" type="object" class="btn-success" attrs="{'invisible':['|',('kra_create_bool','=',False),('kra_agree_or_disagree','=',True)]}"/>
                    <button name="get_emp_disagree_appraisal" string="Discussion / Seeking Clarity" type="object" class="btn-danger" attrs="{'invisible':['|',('kra_create_bool','=',False),('kra_agree_or_disagree','=',True)]}"/>

				</tree>
			</field>
		</record>

        <record id="kw_performance_navigator_my_kra_server_action" model="ir.actions.server">
			<field name="name">My KRA</field>
			<field name="model_id" ref="model_kw_appraisal_kra_emp"/>
			<field name="state">code</field>
			<field name="code">action=model.action_kra_create_check_server_action()</field>
		</record>


    

    </data>
</odoo>