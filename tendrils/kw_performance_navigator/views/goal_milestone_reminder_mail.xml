<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="milestone_reminder_email_template" model="mail.template">
            <field name="name">Appraisal Milestone Reminder e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Reminder: Goal &amp; Milestone Acceptance</field>
            <field name="email_to">${'employee' in ctx and ctx['employee'].work_email or ''}</field>
            <field name="email_cc">${ctx['cc']}</field>
            <field name="model_id" ref="kw_appraisal.model_kw_appraisal_goal"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td> 
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin: 10px 0 0 0;font-weight: 600;">Hii ${object.employee_id.name},</span>
                                    </h5>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is a gentle reminder to please review and accept the goals and milestones in Performance Navigator module.
                                    </p>
                                </div>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>
                                        Kindly log into the portal at your earliest convenience to accept. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
       </record>

