        <field name="subject">Goal Setting | ${object.employee_id.name} &amp; ${object.employee_id.emp_code}</field>
        <field name="email_to">${object.parent_id.work_email}</field>
        <field name="email_cc">${ctx['cc']}</field>
        <field name="model_id" ref="kw_performance_navigator.model_assessment_completion_details"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html" >
            <![CDATA[
                <table border="0">
                    <tr>
                        <td> 
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                    <span style="color:rgb(22, 123, 158);font-size: 16px;margin: 10px 0 0 0;font-weight: 600;">Hii ${object.parent_id.name},</span>
                                </h5>
                            </div>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    ${object.employee_id.name} has successfully completed the probationary period. Hence, request you to upload the goal and milestone for ${object.employee_id.name}'s role. These will help to guide her/his performance and development moving forward. Your insights are crucial in ensuring her/his integration and success within the team.
                                </p>
                            </div>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
