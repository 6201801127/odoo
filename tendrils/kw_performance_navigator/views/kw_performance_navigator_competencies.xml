<odoo>
    <data>
            <!-- ########### Employee Competencies ################################## -->

        <record id="kw_performance_navigator_emp_competencies_tree" model="ir.ui.view">
			<field name="name">Employee competencies tree</field>
			<field name="model">kw_appraisal_empl_competencies</field>
			<field name="arch" type="xml">
				<tree import='false' create='false' class='customer_tree'>
					<field name="emp_id" class='text-info font-weight-bold' invisible='1'/>
                    <field name="appraisal_period"/>
					<field name="emp_code" />
					<field name="name" />
                    <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                    <field name="division" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="job_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <!-- <field name="survey_id"/> -->
					<field name="emp_pl_id" string="Competency Template"/>
                    <button name="get_emp_competencies_details" string="View Details" class="btn-primary" type="object"/>
				</tree>
			</field>
		</record>
        

        <record model="ir.actions.act_window" id="kw_performance_navigator_competencies_action_window">
            <field name="name">My Team Member Competencies</field>
            <field name="res_model">kw_appraisal_empl_competencies</field>
            <field name="view_mode">tree</field>
            <!-- <field name="domain">[]</field> -->
            <field name="context">{'type':'view','edit':False}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_performance_navigator_emp_competencies_tree')}),]"/>
            <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face">
                        No records to view...
                    </p>
            </field>
        </record>

            <!-- ################# Details of competencies #####################################-->

        <record id="kw_performance_navigator_employee_competencies_tree" model="ir.ui.view">
            <field name="name">Employee Details Competencies tree</field>
            <field name="model">kw_empl_apprasial_details_competencies</field>
            <field name="arch" type="xml">
                <tree create='false' import='false' class='customer_tree'>
                    <field name="emp_pl_id" invisible='1'/>
                    <field name="survey_qus"/>
                    <field name="survey_indicate" string='Role'/>
                    <field name="question_min_value" invisible='1'/>
                    <field name="question_max_value" invisible='1'/>
                </tree>
                            
            </field>
        </record>

        <!-- ###########my competencies####################### -->

        <record id="kw_performance_navigator_create_competencies_tree" model="ir.ui.view">
			<field name="name">Employee Competencies tree</field>
			<field name="model">kw_appraisal_my_competensies</field>
			<field name="arch" type="xml">
				<tree import='false' create='false' class='customer_tree'>
					<field name="emp_id" class='text-info font-weight-bold'/>
                    <field name="kw_survey_id" string="Assign Template" force_save='1'/>
                    <button name="get_view_my_competencies_appraisal" string="View" type="object" class="btn-info"/>
				</tree>
			</field>
		</record>

        <record id="kw_performance_navigator_assign_competencies_tree" model="ir.ui.view">
			<field name="name">Employee Competencies tree</field>
			<field name="model">kw_appraisal_my_competensies</field>
			<field name="arch" type="xml">
				<tree import='false' create='false' class='customer_tree'>
					<field name="emp_id" class='text-info font-weight-bold'/>
                    <field name="kw_survey_id" string="Assign Template" />
                    <field name="compt_create_bool" invisible="1"/>
                    <field name="compt_agree_or_disagree" invisible="1"/>
                    <field name="assign_template_compet_not_appraisal" invisible="1"/>
                    <field name="status"/>
                    <button name="get_view_my_competencies_appraisal" string="View" type="object" class="btn-info"/>
                    <button name="get_emp_agree_compten_appraisal" string="Agree" type="object" class="btn-success" attrs="{'invisible':['|',('compt_create_bool','=',False),('compt_agree_or_disagree','=',True)]}"/>
                    <button name="get_emp_compten_disagree_appraisal" string="Discussion / Seeking Clarity" type="object" class="btn-danger" attrs="{'invisible':['|',('compt_create_bool','=',False),('compt_agree_or_disagree','=',True)]}"/>

				</tree>
			</field>
		</record>

        <record id="kw_performance_navigator_my_competencies_server_action" model="ir.actions.server">
			<field name="name">My Competencies</field>
			<field name="model_id" ref="model_kw_appraisal_my_competensies"/>
			<field name="state">code</field>
			<field name="code">action=model.action_competen_create_check_server_action()</field>
		</record>

    </data>
</odoo>