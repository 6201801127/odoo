<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_cxo_config_tree" model="ir.ui.view">
            <field name="name">Group Configuration Tree</field>
            <field name="model">appraisal_cxo_configuration</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="employee_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1'/>
                    <field name="name"/>
                    <field name="department_id"  widget="many2many_tags" attrs="{'invisible':[('name', '!=', 'other')],'required':[('name', '=', 'other')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <record id="kw_cxo_config_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">CXO Configuration</field>
            <field name="res_model">appraisal_cxo_configuration</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <record id="kw_pn_group_config_tree" model="ir.ui.view">
            <field name="name">Group Configuration Tree</field>
            <field name="model">kw_performance_navigator_access_configuration</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="name"/>
                    <field name="employee_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1'/>
                </tree>
            </field>
        </record>

        <record id="kw_pn_access_config_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Access Configuration</field>
            <field name="res_model">kw_performance_navigator_access_configuration</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

    </data>
</odoo>