<odoo>
    <data>
        <!-- kw_performance_navigator_training tree view -->
        <record id="kw_performance_navigator_training_view_tree" model="ir.ui.view">
            <field name="name">kw_performance_navigator_training.view.tree</field>
            <field name="model">kw_performance_navigator_training</field>
            <field name="arch" type="xml">
                <tree import='false' create='false' class='customer_tree'>
                    <field name="appraisal_period_name" />
                    <field name="emp_id" class='text-info font-weight-bold' />
                    <field name="training_id" invisible="1" />
                    <field name="training_planned_hours" />
                    <field name="training_achieved_hours" />
                    <field name="training_percentage"/>
                    <button name="get_view_of_policies" string="CDP" class="btn-success"
                        type="object" />
                    <button name="get_view_of_training" string="View Training" class="btn-primary"
                        type="object" />
                </tree>
            </field>
        </record>


        <!-- kw_performance_navigator_training action window -->
        <record id="kw_performance_navigator_training_action" model="ir.actions.act_window">
            <field name="name">My Training</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_performance_navigator_training</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>

        </record>

        <!-- kw_training_schedule tree view -->
        <record id="kw_training_schedule_tree" model="ir.ui.view">
            <field name="name">kw_training_schedule.tree</field>
            <field name="model">kw_training_schedule</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree import="false" delete="false">
                    <field name="is_attended" invisible="1" />
                    <field name="session_type" string="Venue" />
                    <field name="subject" />
                    <field name="instructor_name" />
                    <field name="date" />
                    <field name="from_time" />
                    <field name="to_time" />
                    <field name="training_id" invisible="1" />
                    <field name="instructor" invisible="1" />
                    <field name="instructor_partner" invisible="1" />
                    <field name="meeting_time_over" invisible="1" />
                </tree>
            </field>
        </record>

        <!-- kw_training_schedule action window -->
        <record id="kw_training_session_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Sessions</field>
            <field name="res_model">kw_training_schedule</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <!-- kw_empl_apprasial_training tree view -->
        <record id="kw_empl_apprasial_training_tree" model="ir.ui.view">
            <field name="name">Employee Training tree</field>
            <field name="model">kw_empl_apprasial_training</field>
            <field name="arch" type="xml">
                <tree import='false' create='false' class='customer_tree'>
                    <field name="appraisal_period" invisible="1"/>
                    <field name="appraisal_period_name" />
                    <field name="emp_code" />
                    <field name="emp_id" />
                    <field name="department_id"
                        options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                    <field name="division"
                        options="{'no_open': True, 'no_create': True, 'no_edit': True}" invisible='1'/>
                    <field name="job_id"
                        options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                    <field name="training_id" invisible="1" />
                    <field name="training_planned_hours" />
                    <field name="training_achieved_hours" />
                    <field name="training_percentage"/>
                    <button name="get_view_of_policies" string="CDP" class="btn-success"
                    type="object" />
                    <button name="get_view_training" string="View Training" class="btn-primary"
                        type="object" />
                </tree>
            </field>
        </record>

        <!-- kw_empl_apprasial_training action window -->
        <record model="ir.actions.act_window" id="kw_empl_apprasial_training_action_window">
            <field name="name">My Team Member Training</field>
            <field name="res_model">kw_empl_apprasial_training</field>
            <field name="view_mode">tree</field>
            <field name="context">{'type':'view','edit':False}</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_empl_apprasial_training_tree')}),]" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records to view...
                </p>
            </field>
        </record>


        <!-- kw_emp_handbook_policy tree view -->
        <record id="kw_emp_handbook_policy_view_tree" model="ir.ui.view">
            <field name="name">kw_emp_handbook_policy.view.tree</field>
            <field name="model">kw_emp_handbook_policy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="emp_id"/>
                    <field name="handbook_type_id"/>
                    <field name="understood"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- kw_emp_handbook_policy action window -->
        <record id="kw_emp_handbook_policy_action" model="ir.actions.act_window">
            <field name="name">Employee Handbook Policy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_emp_handbook_policy</field>
            <field name="view_mode">tree</field>
        </record>


    </data>
</odoo>