<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_performance_navigator">
            <field name="name">Performance Navigator</field>
            <field name="description">Helps to evaluate Performance of Employees...</field>
            <field name="sequence">4</field>
        </record>
        <record id="group_performance_navigator_cxo" model="res.groups">
            <field name="name">CXO</field>
            <field name="category_id" ref="kw_performance_navigator.module_category_performance_navigator"/>
        </record>
        <record id="group_performance_navigator_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="kw_performance_navigator.module_category_performance_navigator"/>
        </record>
        <record id="group_performance_navigator_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_performance_navigator.module_category_performance_navigator"/>
        </record>

        <record id ="manager_team_member_gole_rule" model = "ir.rule">
            <field name = "name">Manager Record rule</field>
            <field name = "model_id" ref = "model_kw_appraisal_goal" />
            <field name = "groups" eval = "[(4, ref ('kw_performance_navigator.group_performance_navigator_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="kw_performance_navigator_training_employee" model="ir.rule">
            <field name="name">Employee Records</field>
            <field name="model_id" ref="model_kw_performance_navigator_training"/>
            <field name="domain_force">[('emp_id', '=', user.employee_ids.id)]</field>
        </record>
    </data>
</odoo>
