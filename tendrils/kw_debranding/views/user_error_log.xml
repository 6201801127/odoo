<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="user_error_log_tree_view">
			<field name="name">user_error_log_tree_view</field>
			<field name="type">tree</field>
			<field name="model">user_error_log</field>
			<field name="arch" type="xml">
				<tree delete='0' create='0' edit='0' import='0'>
					<field name="employee_id" string='Name'/>
					<field name="status" string="Status"/>
					<field name="payload" string='Payload'/>
					<field name="create_date" string='Date'/>
				</tree>
			</field>
		</record>

        <record id="user_error_log_search" model="ir.ui.view">
            <field name="name">user_error_log.search</field>
            <field name="model">user_error_log</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Name'/>
                    <field name="status" string="Status"/>
                    <field name="payload" string='Payload'/>
                    <group expand="0" string="Group By">
                        <filter name="grp_by_employee_id" string="Employee" domain="" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

		<record id="user_error_log_action_window" model="ir.actions.act_window">
			<field name="name">User Error Log</field>
			<field name="res_model">user_error_log</field>
			<field name="view_mode">tree</field>
            <field name="search_view_id" ref="user_error_log_search"/>
            <field name ="context">{'search_default_grp_by_employee_id': 1}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					View Website Sync Status
				</p>

			</field>
		</record>

       
        <menuitem id="kw_emp_user_error_menu"
                  parent="disable_debug_mode.menu_technical_developer"
                  name="User Error Log"
                  action="user_error_log_action_window"
                  sequence="999"/>
	</data>
</odoo>