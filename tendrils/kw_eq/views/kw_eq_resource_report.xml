<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_kw_resource_mapping_report_tree" model="ir.ui.view">
        <field name="name">kw_resource_mapping_report_tree</field>
        <field name="model">kw_resource_mapping_report</field>
        <field name="arch" type="xml">
            <tree class="eq_design_tree" create = "0" import = "0">
                <field name="eq_id"  invisible="1"/>
                <field name="csg"/>
                <field name="account_holder" string = "Account Holder"/>
                <field name="opp_code" string = "Opportunity Code"/>
                <field name="client_name" string = "Client Name"/>
                <field name="oppertuinity_id" invisible="1"/>
                <field name="oppertuinity_name"/>
                <field name="reviewer_id"/>
                <field name="technology_id"/>
                <field name="job_id"/>
                <field name="pm_id"/>
                <field name="sbu_id" string = "SBU Name "/>
                <field name="implementation_man_month"/>
                <field name="no_of_resource_required"/>
                <field name="resource_available"/>
                <field name="resource_required"/>
                <field name="check_representative" invisible="1"/>
                <!-- <field name="engagement_start_date" force_save="1"/> -->
                <!-- <field name="engagement_end_date" force_save="1"/> -->
                <field name="remark" force_save='1'/>
                <button string="Update Resource" name="update_resource_quantity" type="object" class="btn-primary custom-button" 
                />
            </tree>
        </field>
    </record>
    
    

    <record id="kw_resource_mapping_report_server_action" model="ir.actions.server">
        <field name="name">Resource Report</field>
        <field name="model_id" ref="model_kw_resource_mapping_report"/>
        <field name="state">code</field>
        <field name="code">
action = model.eq_resource_mapping()
        </field>
    </record>


    <record id="kw_resource_mapping_report_rcm_server_action" model="ir.actions.server">
        <field name="name">Resource Report</field>
        <field name="model_id" ref="model_kw_resource_mapping_report"/>
        <field name="state">code</field>
        <field name="code">
action = model.eq_resource_mapping()
        </field>
    </record>

    <record id="kw_resource_mapping_report_timesheet_server_action" model="ir.actions.server">
        <field name="name">Resource Report</field>
        <field name="model_id" ref="model_kw_resource_mapping_report"/>
        <field name="state">code</field>
        <field name="code">
action = model.eq_resource_mapping()
        </field>
    </record>

    <menuitem id="kw_resource_mapping_report_menu" name="Resource Mapping Report" parent="eq_report_new_menu" action="kw_resource_mapping_report_server_action"
    sequence = "101" active = 'False'/>

    <menuitem id="kw_resource_mapping_report_rcm_menu" name="Resource Mapping Report" parent="kw_resource_management.sbu_parent_menu" action="kw_resource_mapping_report_rcm_server_action"
    sequence = "50"/>

    <menuitem id="kw_resource_mapping_report_timesheet_menu"
				  name="Resource Mapping Report"
				  parent="hr_timesheet.menu_timesheets_reports"
				  action="kw_resource_mapping_report_timesheet_server_action"
				  sequence="1001"
		/> 

</odoo>
