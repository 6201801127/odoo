<odoo>
  <data>   
    
    <record id="kw_eq_software_master_view_tree" model="ir.ui.view">
      <field name="name">kw_eq_software_master.view.tree</field>
      <field name="model">kw_eq_software_master</field>
      <field name="arch" type="xml">
        <tree >
          <field name="skill_id"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
          <field name="designation_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
          <field name="experience"/>
          <field name="ctc" sum='Total'/>
          <field name="effective_date"/>
          <field name="section"/>
          <field name="sort_no" invisible='0'/>
        </tree>
      </field>
    </record>

      <!-- kw_eq_software_master form view -->
      <record id="kw_eq_software_master_view_form" model="ir.ui.view">
        <field name="name">kw_eq_software_master.view.form</field>
        <field name="model">kw_eq_software_master</field>
        <field name="arch" type="xml">
          <form string="">
            <sheet>
              <group>
                <!-- Add your fields here -->
                <field name="skill_id"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                <field name="designation_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                <field name="experience"/>
                <field name="ctc" sum='Total'/>
                <field name="effective_date"/>
                <field name="section"/>
                <field name="sort_no" invisible='0'/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

    <record id="kw_eq_software_master_view_search" model="ir.ui.view">
            <field name="name">kw_eq_software_master Search</field>
            <field name="model">kw_eq_software_master</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="skill_id"/>
                      <field name="designation_id"/>
                      <field name="experience"/>
                    <group expand="0" string="Group By">
					            <filter name="group_by_skill_id" string="Technology" context="{'group_by': 'skill_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="kw_eq_software_master_action" model="ir.actions.act_window">
      <field name="name">Software Configuration</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">kw_eq_software_master</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="kw_eq_software_master_view_search"/>
      <field name="context">{'search_default_group_by_skill_id':1}</field>
      <field name="view_type">form</field>
      <field name="limit">100</field>

    </record>  

    </data>
</odoo>