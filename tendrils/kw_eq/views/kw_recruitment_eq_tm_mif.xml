<odoo>
    <data>
        <!-- kw_recruitment_eq_tm_mif tree view -->
        <record id="kw_recruitment_eq_tm_mif_view_tree" model="ir.ui.view">
            <field name="name">kw_recruitment_eq_tm_mif.view.tree</field>
            <field name="model">kw_recruitment_eq_tm_mif</field>
            <field name="arch" type="xml">
                <tree  delete='0' create='0' edit='0' class="mif-table">
                    <field name="sl_no" string='Sl#' class='center-val'/>
                    <field name="opp_code" string='Opp Code' class='center-val'/>
                    <field name="opp_id" string='Opportunity Name' class='center-val' invisible='1'/>
                    <field name="opp_name" string='Opportunity Name' class='center-val' invisible='0'/>
                    <field name="skill" required="1"  class='center-val'/>
                    <field name="client_name" force_save='1' invisible='1'/>
                    <!-- <field name="eq_category" required="1" /> -->
                    <!-- <field name="skill_description"  widget="dynamic_popover_text"/> -->
                    <!-- <field name="position" string='Position Name (As per RFP)' widget="dynamic_popover_text"/> -->
					<field name="position" string="Position Name (As per RFP)" invisible='0' class="center-val"/>
                    <field name="number_of_resource" string='#Resource' class='center-val'/>

                    <field name="duration_of_engagement" invisible='1' class='center-val'/>
                    <field name="days" invisible='1'/>
                    <field name="month_days" string='Duration of Engagement' class='center-val'/>
                    <field name="minimum_educational_qualification_id"
                        options="{'no_open': True,'no_create':True,'no_edit':True}" string='Min. Educational Qualification' class='center-val'/>
                    <!-- <field name="specialization" widget="dynamic_popover_text" string='Specialization / Certification'/> -->
                    <field name="year_of_experience" string='Min. Year of Experience' class='center-val'/>
                    <field name="eq_ctc" string='CTC per Resource' class='center-val'/>
                    <!-- <field name="detailed_experience" widget="dynamic_popover_text"/> -->
                    <field name="work_location" string='Work Location' class='center-val'/>
                    <!-- <field name="location"
                        string='Client Work Location'/>
                    <field name="work_location_id"
                        options="{'no_open': True,'no_create':True,'no_edit':True}" widget='many2many_tags'
                        string='CSM Work Location'/> -->
                    <field name="computer_provision"  class='center-val'/>
                    <!-- <field name="job_description" force_save="1"  widget="dynamic_popover_text"/> -->
                    <field name="mif_created" invisible='1'/>
                    <field name="mif_edit_bool" invisible='1'/>
                    <field name="mif_view_bool" invisible='1'/>
                    <field name="mif_code" class='center-val'/>
                    <!-- <button name="view_eq_resource" type="object" string="View EQ" class="btn-success"/> -->
                    <button name="action_generate_mif" type="object" string="Apply"  attrs="{'invisible': [('mif_created','=',True)]}" class="btn-mif"/>
                    <button name="action_edit_mif" type="object" string="Edit"  attrs="{'invisible': [('mif_edit_bool','=',False)]}" class="btn-mif"/>

                    <button name="view_generate_mif" type="object" string="View"  attrs="{'invisible': ['|',('mif_created','=',False),('mif_view_bool','=',False)]}" class="btn-mif"/>
                </tree>
            </field>
        </record>

        <record id="kw_recruitment_eq_tm_mif_view_form" model="ir.ui.view">
            <field name="name">kw_recruitment_eq_tm_mif.view.form</field>
            <field name="model">kw_recruitment_eq_tm_mif</field>
            <field name="arch" type="xml">
                <form string="Recruitment EQ TM MIF" edit='0' create='0' delete='0'>
                    <style>
                        .o_form_view .o_group.o_inner_group > tbody > tr > td.o_td_label{min-width: 230px;}
                    </style>
                    <sheet>
                        <!-- Lead Details Section -->
                        <group string="Lead Details" >
                            <group>
                                <field name="opp_code" string="Opportunity Code"/>
                                <field name="opp_id" string="Opportunity Name" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                
                            </group>
                            <group>
                                <field name="client_name" string="Client Name" force_save='1'/>
                            </group>
                        </group>
        
                        <!-- Contact Persons Section -->
                        <group string="Contact Persons">
                            <group string="Sales">
                                <field name="acc_manager_id" string="Account Manager" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="csg_head_id" string="CSG Head" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group string="Presales">
                                <field name="presales_tl_id" string="Presales TL" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="presales_member_id" string="Presales Member" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group string="Delivery">
                                <field name="pm_id" string="Project Manager" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="sbu_lead_id" string="SBU Lead" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="project_reviewer_id" string="Project Reviewer" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                        </group>
        
                        <!-- Requirements Section -->
                        <group string="Requirements" >
                            <group>
                                <field name="eq_category" string="EQ Category"/>
                                <field name="skill" string="Skill"/>
                                <field name="skill_description" string="Skill Description"/>
                                <field name="position" string="Position (As per RFP)"/>
                                <field name="number_of_resource" string="Number of Resources"/>
                                <label for="duration_of_engagement" string="Duration of Engagement"/>
                                <div>
                                    <field name="duration_of_engagement" class="oe_inline"/> months - <field name="days" class="oe_inline"/> days
                                </div>
                                <field name="minimum_educational_qualification_id" string="Minimum Educational Qualification" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="specialization" string="Specialization / Certification"/>
                                <field name="year_of_experience"  string='Minimum Year of Experience'/>
                                <field name="detailed_experience" string="Detailed Experience"/>
                                <field name="work_location" string="Work Location"/>
                                <field name="work_location_id" string="Base Location" options="{'no_open': True, 'no_create': True, 'no_edit': True}"  attrs="{'invisible': [('work_location','!=','csm_office')]}" widget='many2many_tags'/>
                                <field name="location" string="Location"  attrs="{'invisible': [('work_location','=','csm_office')]}"/>
                                <field name="computer_provision" string="Computer Provision"/>
                                <field name="job_description" string="Job Description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        


