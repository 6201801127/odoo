<odoo>
    <data>
        <record id="kw_eq_report_view_tree" model="ir.ui.view">
            <field name="name">kw_eq_estimate_report.view.tree</field>
            <field name="model">kw_eq_estimate_report</field>
            <field name="arch" type="xml">
                <tree edit='false' create='false' import='false' delete='true' default_order='id dsc'>
                    <field name="kw_oppertuinity_id"/>
                    <field name="stage_id"/>
                    <field name="estimate_id" invisible="1"/>
                    <field name="client_name"  attrs="{'invisible':[('kw_oppertuinity_id','=',False)]}"/>
                    <field name="state"/>
                    <field name="pending_at" invisible="0"/>
                    <field name="effective_from" invisible="0" string="Applied date"/>
                </tree>
            </field>
        </record>


        <record id="kw_eq_report_action" model="ir.actions.act_window">
            <field name="name">EQ Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_eq_estimate_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <record id="kw_eq_revision_report_view_tree" model="ir.ui.view">
            <field name="name">kw_eq_revision_report.view.tree</field>
            <field name="model">kw_eq_revision_report</field>
            <field name="arch" type="xml">
                <tree edit='false' create='false' import='false' delete='true' default_order='id dsc'>
                    <field name="kw_oppertuinity_id"/>
                    <field name="estimate_id" invisible="1"/>
                    <field name="client_name"  attrs="{'invisible':[('kw_oppertuinity_id','=',False)]}"/>
                    <field name="state"/>
                    <field name="pending_at" invisible="0"/>
                </tree>
            </field>
        </record>


        <record id="kw_eq_revision_status_report_action" model="ir.actions.act_window">
            <field name="name">EQ Revision Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_eq_revision_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>



    </data>
</odoo>
