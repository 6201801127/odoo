<odoo>
    <data>
      <!-- kw_eq_page_access tree view -->
      <record id="kw_eq_page_access_view_tree" model="ir.ui.view">
        <field name="name">kw_eq_page_access.view.tree</field>
        <field name="model">kw_eq_page_access</field>
        <field name="arch" type="xml">
          <tree editable='top'>
            <field name="page_name"/>
            <field name="authority_ids" widget='many2many_tags' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
          </tree>
        </field>
      </record>
  
      <!-- kw_eq_page_access action window -->
      <record id="kw_eq_page_access_action" model="ir.actions.act_window">
        <field name="name">Page Access Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kw_eq_page_access</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
      </record>
  
      
    </data>
  </odoo>