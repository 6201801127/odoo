<odoo>
    <data>
      <record id="kw_eq_approval_configuration_view_tree" model="ir.ui.view">
        <field name="name">kw_eq_approval_configuration.view.tree</field>
        <field name="model">kw_eq_approval_configuration</field>
        <field name="arch" type="xml">
          <tree editable='top'>
            <field name="approval_type" required="1"/>
            <field name="level_1" />
            <field name="level_2" />
            <field name="level_3" />
            <field name="level_4" />
            <field name="level_5"/>
            <field name="level_6" attrs="{'readonly': [('approval_type','=','revision')]}"/>
            <field name="write_date" invisible='1'/>
            <field name="effective_date" />
          </tree>
        </field>
      </record>

      
      <record id="kw_eq_approval_configuration_action" model="ir.actions.act_window">
        <field name="name">Approval Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kw_eq_approval_configuration</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
      </record>
      
      
    </data>
</odoo>