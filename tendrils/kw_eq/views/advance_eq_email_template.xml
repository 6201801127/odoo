<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="advance_eq_template" model="mail.template">
            <field name="name">Advance EQ e-mail Template </field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="subject">EQ Advance Request | ${ctx['eq']} | ${ctx['status']}</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="kw_eq.model_kw_advance_for_eq"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
   
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['name']},
                                    </h5>
                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Application for EQ Advance has been ${ctx['status']} by ${ctx['action_by']}.
                                    </p>
                                </div>

                               <div style="margin-left: 0.7rem;margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 8px;">
                                    <p>Please log into Tendrils for more information and take action.</p>
                                </div>
                                <br/>   
                                <div style="margin-left: 0.7rem;margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 8px;">
                                    <p>Thanks and regards</p>
                                </div>

                                <div style="color:#676767;margin-left: 1.2rem;margin-bottom:1em;">
                                    % if object.env.user.employee_ids and object.env.user.employee_ids.user_id.signature:
                                        <br/>
                                        ${object.env.user.employee_ids.user_id.signature | safe}
                                    % endif
                                </div>
                            </td>
                        </tr>

                    </table>

 
                ]]>

            </field>
        </record>
</odoo>