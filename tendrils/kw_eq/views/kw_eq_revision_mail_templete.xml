<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_eq_revision_approve_mail_template" model="mail.template">
          <field name="name">EQ Revision Mail Template</field>
          <field name="email_from">tendrils@csm.tech</field>
          <field name="subject">EQ Revision || ${object.kw_oppertuinity_id.name}</field>
          <field name="email_to">${ctx['email_to']}</field>
          <field name="model_id" ref="kw_eq.model_kw_eq_revision"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['approval_pending']},
                                    </h5>
                                    %if ctx['reject']== False:
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">The EQ having work order name <b>${object.kw_oppertuinity_id.name}</b> has been ${ctx['status']} by ${ctx['approver']}.</p>
                                    %endif

                                    %if ctx['reject']== True:
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">The EQ having work order name <b>${object.kw_oppertuinity_id.name}</b> has been ${ctx['status']} by ${ctx['approver']}.</p>
                                    %endif
                                </div>
                                %if ctx['reject']== False:
                                    <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                            Please login to Tendrils to take action.<br/>
                                            ---------------------------------------------------
                                            <br/>
                                            This is a system generated mail. Please do not reply to this email. 
                                        </p>
                                    </div>
                                %endif
                                <div style="margin-left: 0.7rem;margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 8px;">
                                    <p>Thanks and regards</p>
                                </div>

                            </td>
                        </tr>
                    </table>
                ]]>
                    
            </field>
       </record>



       
    </data>
</odoo>