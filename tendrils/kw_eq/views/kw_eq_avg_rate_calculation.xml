<odoo>
    <data>
        <record id="kw_eq_ancillary_master_view_tree" model="ir.ui.view">
            <field name="name">kw_eq_ancillary_master.view.tree</field>
            <field name="model">kw_eq_ancillary_master</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="name" required='1' />
                </tree>
            </field>
        </record>

        <!-- kw_eq_avg_rate_calculation tree view -->
        <record id="kw_eq_avg_rate_calculation_view_tree" model="ir.ui.view">
            <field name="name">kw_eq_avg_rate_calculation.view.tree</field>
            <field name="model">kw_eq_avg_rate_calculation</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="effective_from" />
                    <field name="percentage" required='1' />
                </tree>
            </field>
        </record>


        <record id="kw_eq_avg_rate_calculation_action" model="ir.actions.act_window">
            <field name="name">Average Rate Percentage Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_eq_avg_rate_calculation</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

    </data>
</odoo>