<odoo>
    <data>
      <record id="kw_eq_ancillary_master_view_tree" model="ir.ui.view">
        <field name="name">kw_eq_ancillary_master.view.tree</field>
        <field name="model">kw_eq_ancillary_master</field>
        <field name="arch" type="xml">
          <tree editable='top'>
            <field name="name"  required='1'/>
            <field name="category_in" />
          </tree>
        </field>
      </record>

      <!-- kw_eq_ancillary_item_master tree view -->
      <record id="kw_eq_ancillary_item_master_view_tree" model="ir.ui.view">
        <field name="name">kw_eq_ancillary_item_master.view.tree</field>
        <field name="model">kw_eq_ancillary_item_master</field>
        <field name="arch" type="xml">
            <tree  editable='top'>
                <field name="ancillary_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                <field name="item" required='1'/>
                <field name="unit"/>
                <field name="section"/>
                <field name="sort_no"/>
            </tree>
        </field>
      </record>

  
      <record id="kw_eq_ancillary_master_action" model="ir.actions.act_window">
        <field name="name">Ancillary Master</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kw_eq_ancillary_master</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
      </record>


      <!-- kw_eq_ancillary_item_master action window -->
      <record id="kw_eq_ancillary_item_master_action" model="ir.actions.act_window">
        <field name="name">Ancillary Item Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kw_eq_ancillary_item_master</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
      </record>
      
    </data>
  </odoo>