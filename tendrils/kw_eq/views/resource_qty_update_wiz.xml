<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="resource_qty_update_wiz_form_view" model="ir.ui.view">
			<field name="name">resource_qty_update_wiz form</field>
			<field name="model">resource_qty_update_wiz</field>
			<field name="arch" type="xml">
				<form>
					<div>
						<group>
							<field name="resource_map_id" invisible='1' />
							<field name="opportunity_id" readonly='1'
								options="{'no_open': True,'no_create':True,'no_edit':True}" />
						</group>
						<group>
							<group>

								<field name="remark" readonly='1' />
								<!-- <field name="resource_no" readonly='1'/> -->
								<field name="no_of_resource_required" required='1'
									groups="kw_resource_management.group_budget_manager" />
								<field name="resource_available" required='1'
									groups="kw_resource_management.group_sbu_representative,kw_resource_management.group_sbu_reviewer" />
								<field name="resource_required" invisible='1' />
								<!-- <field name="engagement_start_date" required= '1'/>
								<field name="engagement_end_date" required= '1'/>  -->
							</group>

						</group>
					</div>
					<footer>
						<button string='Update' name="btn_resource_qty_update" type="object"
							class="btn font-weight-bold text-white"
							style="background-color: #108fbb;" />
						<button string="Cancel" class="btn-secondary" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="resource_qty_update_wiz_actions" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Update Resource Available Quantity</field>
			<field name="res_model">resource_qty_update_wiz</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>