<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="central_bench_engagement_mail_to_sbu" model="mail.template">
            <field name="name">Central Bench Engagement</field>
            <field name="model_id" ref="kw_resource_management.model_central_bench_sbu_wizard"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${object.env.user.email or ''}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['cc_emp']}</field>
            <field name="subject">Talent Pool List Publish !</field>
           <field name="body_html">
                <![CDATA[

                <div style="padding-left: 20px;">
                    <p>
                        <b><span style="font-size: 18px;margin-right: 2px;">Dear SBUs,</span></b>
                    </p>
                    <p style="font-size: 17px;">
                        The following skilled employees are available in the Talent Pool for immediate deployment. Kindly reach R&CM department for tagging against confirmed Work order/Opportunity and MIFs.
                    </p>
                </div>
                <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem;">
                    <thead>
                        <!-- <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Sl No </th> -->
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Designation </th>
                        <!-- <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Experience </th> -->
                        % for row in ctx.get('skill_list'):
                            <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">${row}</th>
                        %endfor
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">Total </th>
                    </thead>
                    <tbody>
                        % for row in ctx.get('emp_list'):
                            <tr>
                                <!-- <td>${loop.index}</td> -->
                                <td>${row.split(':')[0]}</td>
                                <!-- <td> ${row.split(':')[1]}</td> -->
                                % for skill in ctx.get('skill_list'):
                                    <td>${row.split(':')[loop.index+2]}</td>
                                %endfor
                                <td>${row.split(':')[2]}</td>
                            </tr>
                        %endfor
                    </tbody>
                </table>
                <p>This is for your kind information and perusal.</p>
                Thanks and regards,<br>
                R&CM Department
                ]]>
            </field>
        </record>
    </data>
</odoo>
