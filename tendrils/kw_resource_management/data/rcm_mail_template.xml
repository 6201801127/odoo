<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="rcm_mail_template" model="mail.template">
            <field name="name">Approve Reject Updation</field>
            <field name="model_id" ref="kw_resource_management.model_sbu_approve_reject"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${object.env.user.email or ''}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">SBU Tagging</field>
            <field name="body_html">
                <![CDATA[

                <div style="padding-left: 20px;">
                    <p>
                        <b>
                           <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Hii Team,</span>
                           <!-- <span style="font-size: 18px;">${object.sbu_master_id.representative_id.name},</span> -->
                        </b>
                    </p>
                    % if ctx['state_approve'] :
                    <p style="font-size: 17px;">
                        Please be informed that the below mentioned resource has been Acknowledged by ${ctx['sbu_head']} on ${ctx['date']}.<br></br>
                    </p>
                    % elif ctx['state_reject'] :
                    <p style="font-size: 17px;">
                        Please be informed that the below mentioned resource has been Rejected by ${ctx['sbu_head']} on ${ctx['date']}.<br></br>
                    </p>
                    %endif
                </div>
                &nbsp;
                <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem;">
                    <thead>
                        <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Sl No </th>
                        <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Name </th>
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Designation </th>
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">Date Of Joining</th>
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">Technology</th>
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">Department</th>
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">Location</th>
                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;">Type Of Employment</th>
                    </thead>
                    
                    
                    <tbody>
                        % for rec in object:
                            <tr>
                                <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:03%;" >
                                    ${loop.index}
                                </td>

                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.emp_id.name or ''}
                                </td>

                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.designation  or ''}
                                </td>

                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.joining_date or ''}
                                </td>
                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.technology}
                                </td>

                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.department or ''}
                                </td>

                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.location or ''}
                                </td>

                                <td  style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    ${rec.type_of_employee or ''}
                                </td>

                                

                            </tr>
                        % endfor
                    </tbody>
                     
                </table>
                   
                ]]> 
            </field>        
        </record>
    </data>
</odoo>