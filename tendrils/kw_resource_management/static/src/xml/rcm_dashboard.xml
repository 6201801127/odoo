<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="RCMDashboardMain">
        <div class="p-5 container-fluid">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card rcm-card">
                        <div class="card-body text-center rcm-primary-card-body">
                            <span class="rcm-h1 font-weight-bold text-center">Talent Pool Analytics </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4 ">
                <div class="col talent_pool_report">
                    <div class="card rcm-card">
                        <div class="card-body text-center rcm-secondary-card-body-total">
                            <span class="mb-2 h2 font-weight-bold "> Total Talent Pool Strength </span>
                            <p class="rcm-h2 font-weight-bold"><t t-esc="widget.talent_pool_count"/> 
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col under_skill">
                    <div class="card rcm-card">
                        <div class="card-body text-center rcm-secondary-card-body">
                            <span class="mb-2 rcm-h2-dup font-weight-bold"> Open Pool </span>
                            <p class="rcm-h2-dup-count font-weight-bold"> <t t-esc="widget.under_skill_count"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col standard_orientation">
                    <div class="card rcm-card">
                        <div class="card-body text-center rcm-secondary-card-body">
                            <span class="mb-2 rcm-h2-dup font-weight-bold"> Standard Orientation Program </span>
                            <p class="rcm-h2-dup-count font-weight-bold"> <t t-esc="widget.standard_orientation_count"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col investment_resource">
                    <div class="card rcm-card">
                        <div class="card-body text-center rcm-secondary-card-body">
                            <span class="mb-2 rcm-h2-dup font-weight-bold"> Investment Resource </span>
                            <p class="rcm-h2-dup-count font-weight-bold"> <t t-esc="widget.investment_resource_count"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col future_projection">
                    <div class="card rcm-card">
                        <div class="card-body text-center rcm-secondary-card-body-fp">
                            <span class="mb-2 h2 font-weight-bold"> Future Projection </span>
                            <p class="rcm-h2 font-weight-bold"> <t t-esc="widget.future_projection_count"/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="card rcm-card mb-4">
                        <div class="card-body text-center rcm-portlet-card-body">
                                <div id="designation_wise_strength_container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card rcm-card mb-4">
                        <div class="card-body text-center rcm-portlet-card-body">
                            <div id="skill_wise_strength_container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card rcm-card mb-4">
                        <div class="card-body text-center rcm-portlet-card-body">
                            <div id="engagement_plan_wise_distribution_container"></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card rcm-card mb-4">
                        <div class="card-body text-center rcm-portlet-card-body">
                             <div id="location_wise_employee_strength_container_graph"></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card rcm-card mb-4">
                        <div class="card-body text-center rcm-portlet-card-body">
                            <div id="bench_day_wise_distribution_container_graph"></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card rcm-card mb-4">
                        <div class="card-body text-center rcm-portlet-card-body">
                            <div id="skill_distribution_in_designation_container_graph"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>


</templates>
