<templates id="forecasted_release_report_temp">
    <!-- Main Template -->
    <t t-name="ForecastedReleaseReportSheet">
        <div class="container-fluid px-4 py-3">
            <div class="card">
                <div class="card-body" style="background-color: aliceblue;">
                    <div style="background-color:rgb(213, 222, 231);box-shadow:rgba(0, 0, 0, 0.2) 20px 20px 20px;border-radius:22px;" class="d-flex align-items-center justify-content-center p-3 mb-3">
                        <h2 style="font-size:33px;">Forecasted Release Report</h2>
                    </div>
                    <div class="table-responsive" style="box-shadow:rgba(0, 0, 0, 0.2) 20px 20px 20px;">
                        <table class="table table-bordered table-striped table-hover clickable" id="forecasted_release_report_table">
                            <thead>
                                <tr class="table-success">
                                    <th>Technology</th>
                                    <th>Designation</th>
                                    <th>April</th>
                                    <th>May</th>
                                    <th>June</th>
                                    <th>July</th>
                                    <th>August</th>
                                    <th>September</th>
                                    <th>October</th>
                                    <th>November</th>
                                    <th>December</th>
                                    <th>January</th>
                                    <th>February</th>
                                    <th>March</th>
                                </tr>
                            </thead>
                            <tbody id="forecasted_release_report_tbody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <!-- Row Template for Data Rendering -->
    <t t-name="ForecastedReleaseReportRow">
        <tr t-att-data-record-id="record.id">
            <td><t t-esc="record.primary_skill_id"/></td>
            <td><t t-esc="record.job_id"/></td>
            <td data-month="apr"><t t-esc="record.apr"/></td>
            <td data-month="may"><t t-esc="record.may"/></td>
            <td data-month="jun"><t t-esc="record.jun"/></td>
            <td data-month="jul"><t t-esc="record.jul"/></td>
            <td data-month="aug"><t t-esc="record.aug"/></td>
            <td data-month="sep"><t t-esc="record.sep"/></td>
            <td data-month="oct"><t t-esc="record.oct"/></td>
            <td data-month="nov"><t t-esc="record.nov"/></td>
            <td data-month="dec"><t t-esc="record.dec"/></td>
            <td data-month="jan"><t t-esc="record.jan"/></td>
            <td data-month="feb"><t t-esc="record.feb"/></td>
            <td data-month="mar"><t t-esc="record.mar"/></td>
        </tr>
    </t>
</templates>
