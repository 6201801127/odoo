<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the tree view for your model -->
        <record id="capability_report_report_tree" model="ir.ui.view">
            <field name="name">Capability Report</field>
            <field name="model">capability_report</field>
            <field name="arch" type="xml">
                <tree string="Capability Report Tree">
                    <field name="employee_id"/>
                    <field name="parent_id" string="Reporting Authority"/>
                    <field name="primary_skill_id"/>
                    <field name="self_primary_skill_id_score"/>
                    <field name="ra_primary_skill_id_score"/>
                    <field name="lnk_primary_skill_id_score"/>
                    <field name="secondary_skill_id"/>
                    <field name="self_secondary_skill_id_score"/>
                    <field name="ra_secondary_skill_id_score"/>
                    <field name="lnk_secondary_skill_id_score"/>
                    <field name="tertiarry_skill_id"/>
                    <field name="self_tertial_skill_id_score"/>
                    <field name="ra_tertial_skill_id_score"/>
                    <field name="lnk_tertial_skill_id_score"/>
                    <field name="state"/>
                    <field name="date" invisible='1'/>
                    <!-- <field name="current_quarter_bool" invisible='1'/> -->
                    <field name="fiscal_year" invisible='1'/>
                    <field name="current_quater" invisible='1'/>
                </tree>
            </field>
        </record>
        <record id="average_capability_report_report_tree" model="ir.ui.view">
            <field name="name">Capability Report</field>
            <field name="model">capability_report</field>
            <field name="arch" type="xml">
                <tree string="Capability Report Tree">
                    <field name="employee_id"/>
                    <field name="primary_skill_id"/>
                    <field name="self_primary_skill_id_score"/>
                    <field name="ra_primary_skill_id_score"/>
                    <field name="lnk_primary_skill_id_score"/>
                    <field name="avg_primary_skill_id_score"/>
                    <field name="secondary_skill_id"/>
                    <field name="self_secondary_skill_id_score"/>
                    <field name="ra_secondary_skill_id_score"/>
                    <field name="lnk_secondary_skill_id_score"/>
                    <field name="avg_secondary_skill_id_score"/>
                    <field name="tertiarry_skill_id"/>
                    <field name="self_tertial_skill_id_score"/>
                    <field name="ra_tertial_skill_id_score"/>
                    <field name="lnk_tertial_skill_id_score"/>
                    <field name="avg_tertial_skill_id_score"/>
                    <field name="total_avg_score"/>
                    <field name="state"/>
                    <field name="date" invisible='1'/>
                    <!-- <field name="current_quarter_bool" invisible='1'/> -->
                    <field name="fiscal_year" invisible='1'/>
                    <field name="current_quater" invisible='1'/>
                </tree>
            </field>
        </record>
        <record id="capability_report_search_view" model="ir.ui.view">
            <field name="name">kw_capability_report_search_view</field>
            <field name="model">capability_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string="Name"/>
                    <filter string="This FY Year" name="this_year_skill_sheet_report" domain="[('date', '&gt;', context_today().strftime('%Y') + '/03/31'),
                            ('date', '&lt;=', (context_today()+relativedelta(years=1)).strftime('%Y')+ '/04/01')]"/>
                    <separator/>
                    <filter string="Quarter 1" domain="[('date', '>=', context_today().strftime('%Y-04-01')), ('date', '&lt;', context_today().strftime('%Y-07-01'))]" name="quarter1_skill_sheet_report"/>
                    <filter string="Quarter 2" domain="[('date', '>=', context_today().strftime('%Y-07-01')), ('date', '&lt;', context_today().strftime('%Y-10-01'))]" name="quarter2_skill_sheet_report"/>
                    <filter string="Quarter 3" domain="[('date', '>=', context_today().strftime('%Y-10-01')), ('date', '&lt;', (context_today() + relativedelta(years=1)).strftime('%Y-01-01'))]" name="quarter3_skill_sheet_report"/>
                    <filter string="Quarter 4" domain="[('date', '>=', (context_today() + relativedelta(years=1)).strftime('%Y-01-01')), ('date', '&lt;', context_today().strftime('%Y-04-01'))]" name="quarter4_skill_sheet_report"/>
                    <!-- <filter string="Current Quarter" name="current_quarter_skill_sheet_report" domain="[('current_quarter_bool', '=',True)]"/> -->
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>
        <record id="capability_filterd_report_wizard_form" model="ir.ui.view">
            <field name="name">Filter Capability Report</field>
            <field name="model">capability_filterd_report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="fis_year" options='{"no_open": True, "no_create": True, "no_edit": True}'/>
                            <field name="fiscal_quarter"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='View Report' name="capability_report_filter" type="object"
                                style="background-color: #108fbb;"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="avg_capability_filterd_report_wizard_form" model="ir.ui.view">
            <field name="name">Filter Average Capability Report</field>
            <field name="model">avg_capability_filterd_report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="fis_year" options='{"no_open": True, "no_create": True, "no_edit": True}'/>
                            <field name="fiscal_quarter"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='View Report' name="avg_capability_report_filter" type="object"
                                style="background-color: #108fbb;"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="capability_filterd_report_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Capability Report</field>
            <field name="res_model">capability_filterd_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
        <record id="lnk_user_capability_report_action" model="ir.actions.act_window">
            <field name="name">Capability Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">capability_filterd_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
        <record id="lnk_user_avg_capability_report_action" model="ir.actions.act_window">
            <field name="name">Average Capability Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">avg_capability_filterd_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
