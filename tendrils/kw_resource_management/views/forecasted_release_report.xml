		<record id="forecasted_release_report_search" model="ir.ui.view">
			<field name="name">Forecasted Release Report Search</field>
			<field name="model">forecasted_release_report</field>
			<field name="arch" type="xml">
				<search>
					<!-- Add your fields here -->
					<field name="sbu_id" invisible='1'/>
					<field name="sbu_name"/>
					<field name="order_oppurtunity"/>
					<field name="project_name"/>
                    <field name="emp_id"/>
                    <field name="resource_name"/>
                    <field name="code"/>
                    <field name="job_id"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="primary_skill_id"/>
                    <field name="extend_date"/>
					<field name="year" widget="char"/>
					<group expand="0" string="Group By">
						<filter name="groupby_year" context="{'group_by': 'year'}" string="Year"/>
						<filter name="groupby_primary_skill_id" context="{'group_by': 'primary_skill_id'}" string="Technology"/>
					</group>
				</search>
			</field>
		</record>
			

		<!-- kw_contract_end_log action window -->
		<record id="forecasted_release_report_action" model="ir.actions.act_window">
			<field name="name">Forecasted Release Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">forecasted_release_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="context">{'search_default_end_date':1}</field>
		</record>

