<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="central_bench_report_history_list">
            <field name="name">Central Bench History Report</field>
            <field name="model">central_bench_report_history</field>
            <field name="arch" type="xml">
                <tree create='false' edit='false' import='false' delete='false'>
                    <field name="employee_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="closed_bool"/>
                </tree>
            </field>
        </record>
        <record id="sbu_bench_resource_search_view" model="ir.ui.view">
            <field name="name">Central Bench History Report Search</field>
            <field name="model">central_bench_report_history</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                </search>
            </field>
        </record>
        
       
        <record id="central_bench_report_action" model="ir.actions.act_window">
            <field name="name">Central Bench History Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">central_bench_report_history</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p><p>
                </p>
            </field>
        </record>
        <!-- query report view -->
        <record model="ir.ui.view" id="central_bench_weekly_ctc_query_report">
            <field name="name">Central Bench Weekly CTC/Count Report</field>
            <field name="model">central_bench_ctc</field>
            <field name="arch" type="xml">
                <tree create='false' edit='false' import='false' delete='false'>
                    <field name="year_data"/>
                    <field name="month_data"/>
                    <field name="week1_count" sum="week1_count" class="vertical_data"/>
                    <field name="week1_ctc" sum="week1_ctc" class="vertical_data"/>
                    <field name="week2_count" sum="week2_count" class="horizontal_data"/>
                    <field name="week2_ctc" sum="week2_ctc" class="horizontal_data"/>
                    <field name="week3_count" sum="week3_count" class="vertical_data"/>
                    <field name="week3_ctc" sum="week3_ctc" class="vertical_data"/>
                    <field name="week4_count" sum="week4_count" class="horizontal_data"/>
                    <field name="week4_ctc" sum="week4_ctc" class="horizontal_data"/>
                    <field name="week5_count" sum="week5_count" class="vertical_data"/>
                    <field name="week5_ctc" sum="week5_ctc" class="vertical_data"/>
                </tree>
            </field>
        </record>
         <record id="central_bench_head_count_search_view" model="ir.ui.view">
            <field name="name">Central Bench Head Count Report Search</field>
            <field name="model">central_bench_ctc</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="This Year" domain="[('year_data', '=',context_today().strftime('%Y'))]" name="current_year_head_count"/>
                    <filter string="Last Year" domain="[('year_data', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_head_count"/>
                    <filter string="Quarter 1" domain="[('year_data', '=', context_today().strftime('%Y')), ('month_data', 'in',[4,5,6])]" name="quarter1_head_count" />
                    <filter string="Quarter 2" domain="[('year_data', '=', context_today().strftime('%Y')), ('month_data', 'in',[7,8,9])]" name="quarter2_head_count" />
                    <filter string="Quarter 3" domain="[('year_data', '=', context_today().strftime('%Y')), ('month_data', 'in',[10,11,12])]" name="quarter3_head_count" />
                    <filter string="Quarter 4" domain="[('year_data', '=', context_today().strftime('%Y')), ('month_data', 'in',[1,2,3])]" name="quarter4_head_count" />

                    <separator/>
                </search>
            </field>
        </record>
         <record id="central_bench_head_count_report_action" model="ir.actions.act_window">
            <field name="name">Central Bench Weekly CTC/Count Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">central_bench_ctc</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p><p>
                </p>
            </field>
        </record>
        
    </data>
</odoo>