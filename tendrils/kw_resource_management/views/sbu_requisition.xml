<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sbu_requisition_tree" model="ir.ui.view">
            <field name="name">sbu_requisition.tree</field>
            <field name="model">sbu.requisition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="designation"/>
                    <field name="opp_wo"/>
                    <field name="sbu_id"/>
                </tree>
            </field>
        </record>
        
        
        <record id="sbu_requisition_form" model="ir.ui.view">
            <field name="name">sbu_requisition.form</field>
            <field name="model">sbu.requisition</field>
            <field name="arch" type="xml">
                <form>
                	<header>
                		<button name="button_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                		<button name="button_to_approve" type="object" string="To Approve" class="oe_highlight" attrs="{'invisible':[('state','!=','confirm')]}" />
                		<button name="button_approve" type="object" string="Approve" class="oe_highlight" attrs="{'invisible':[('state','!=','to_approve')]}"/>
						<field name="state" widget="statusbar" />
					</header>
                	<sheet>
                		<group>
                			<field name="name" nolabel="1" readonly="1"/>
	                		<group>
			                    <field name="user_id" readonly="1"/>
			                    <field name="designation" readonly="1"/>
			                    <field name="budget_type"/>
	                		</group>
	                		<group>
	                			<field name="opp_wo"/>
	                    		<field name="sbu_id"/>
	                		</group>
                		</group>
                		<notebook>
							<page name="resources" string="Resources">
								<field name="sbu_line_ids">
									<tree string="Resources" >
										<field name="sbu_line_id" invisible="1"/>
										<field name="skill"  />
										<field name="designation"  />
										<field name="min_exp_year" />
										<field name="max_exp_year"/>
										<field name="intial_demand" />
										<field name="selected_resource_qty" />
										<field name="fullfillment_type"/>
									</tree>
									<form>
										<group>
											<group>
												<field name="skill"  />
												<field name="designation"  />
												<field name="min_exp_year" />
												<field name="max_exp_year"/>
											</group>
											<group>
												<field name="intial_demand" />
												<field name="selected_resource_qty" />
												<field name="fullfillment_type"/>
											</group>
										</group>
									</form>
								</field>
							</page>
						</notebook>
						<field name="note" />
                	</sheet>
                </form>
            </field>
        </record>

        

        
        <record id="sbu_requisition_action" model="ir.actions.act_window">
            <field name="name">SBU Requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu.requisition</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
    </odoo>