<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="resource_release_remark_wizard_view_form" model="ir.ui.view">
            <field name="name">remark_wizard.view.form</field>
            <field name="model">resource_release_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <!-- <group> -->
                        
                        <group>
                            <field name="release_reason" string="Reason" required='1'/>
                        </group>
                        <div class="row">
                            <label for="enhanced_roles" class="font-weight-bold col-md-9" string='Would you recommend him for similar or enhanced roles that he/ she can perform.'/>
                            <span>
                                <field name="enhanced_roles" widget="radio" options="{'horizontal': true}" required='1'/>
                            </span>
                        </div>
                        <div class="row">
                            <label for="discipline_adherence_ratings" class="font-weight-bold col-md-9" string='Discipline and Process adherence.'/>
                            <span>
                                <field name="discipline_adherence_ratings" widget="priority"/>
                            </span>

                        </div>
                        <b>
                            <span class="text-primary">Please describe briefly your association with employee and the tasks delegated and the output with 200 characters (Maximum)</span>
                        </b>
                        <group>
                            <field name="reason" required='1' string="Remark" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm_btn" type="object" string="Confirm" class="btn-success" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- kw_resource_release_log tree view -->
        <record id="kw_resource_release_log_view_tree" model="ir.ui.view">
            <field name="name">kw_resource_release_log.view.tree</field>
            <field name="model">kw_resource_release_log</field>
            <field name="arch" type="xml">
                <tree create='0' delete='0' import='0'>
                    <field name="release_emp_code" />
                    <field name="release_emp_id" invisible='1'/>
                    <field name="release_emp_name"/>
                    <field name="create_date" string='Released On' />
                    <field name="release_by" />
                    <field name="release_reason"/>
                    <field name="release_from" />
                    <field name="discipline_adherence_ratings"  widget="priority"/>
                    <field name="enhanced_roles"/>
                    <field name="reason" widget="dynamic_popover_text" />
                </tree>
            </field>
        </record>

        <record id="kw_resource_release_log_action" model="ir.actions.act_window">
            <field name="name">Release Log</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_resource_release_log</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        
    </data>
</odoo>