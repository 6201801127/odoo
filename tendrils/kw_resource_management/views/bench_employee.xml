<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sbu_bench_resource_tree" model="ir.ui.view">
            <field name="name">sbu_bench_resource.tree</field>
            <field name="model">sbu_bench_resource</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' decoration-danger="applied_eos == True">
                    <!-- <field name="id" string="Sl.No"/> -->
                    <field name="code"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="name"/>
                    <field name="grade_band"/>
                    <field name="designation"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type" invisible="1"/>
                    <field name="job_branch_id"/>
                    <field name="applied_eos" invisible='1'/>
                    <field name="category_kw_id" invisible='1'/>
                    <field name="sbu_type" invisible='1'/>
                    <field name="primary_skill_id"/>
                    <field name="release_date"/>
                    <field name="interval_day"/>
                    <!-- <field name="eos_status" invisible='1'/> -->
                    <field name="sbu" invisible='0'/>
                    <field name="project_id"/>
                    <field name="remark" widget="dynamic_popover_text"/>
                    <field name="engagement_plan" />
                    <field name="engagement_plan_details"/>
                    <field name="till_date"/>
                    <!-- <field name="project_id" string='Future Projection'/>
                    <field name="other_text" string = 'Other'/> -->
                    <field name="future_projection"/>
                    <field name="experience"/>
                    <field name="discipline_adherence_ratings"  widget="priority"/>
                    <field name="enhanced_roles"/>
                    <button name="action_timesheet_details" string="Timesheet Details" type="object" class="btn-success"/>
                </tree>
            </field>
        </record>

        <record id="sbu_bench_resource_search_view" model="ir.ui.view">
            <field name="name">sbu_bench_resource search view</field>
            <field name="model">sbu_bench_resource</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Employee'/>
                    <field name="designation" string="Employee Designation"/>
                    <field name="emp_category" string=' Employee Category'/>
                    <field name="emp_role" string='Employee Role'/>
                    <field name="future_projection" string='Future Projection'/>
                    <field name="engagement_plan" string='Engagement Plan'/>
                    <field name="employement_type" string="Employment Type" invisible="1"/>
                    <field name="job_branch_id" string='Location'/>
                    <separator string='Employee Category'/>
                    <filter string="Coding" domain="[('category_kw_id','=',3)]" name="january_end_date"/>
                    <filter string="Delivery" domain="[('category_kw_id','=',7)]" name="january_end_date"/>
                    <filter string="Project Management" domain="[('category_kw_id','=',1)]" name="january_end_date"/>
                    <filter string="Team/Tech Lead" domain="[('category_kw_id','=',19)]" name="january_end_date"/>
                </search>
            </field>
        </record>

        <!-- kw_contract_end_log action window -->
        <record id="sbu_bench_resource_action" model="ir.actions.act_window">
            <field name="name">Talent Pool Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_bench_resource</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

      
        <record id="central_bench_wizard_report_form" model="ir.ui.view">
            <field name="name">central_bench_wizard_report_form</field>
            <field name="model">central_bench_wizard_report</field>
            <field name="arch" type="xml">
                <form string="Central Bench Engagement Report">
                    <sheet>
                        <group>
                            <field name="employee_ids" style="pointer-events:none;" readonly="1"/>
                        </group>
                        <group>
                            <field name="send_mail"/>
                        </group>
                        
                        <group>
                            <field name="cc_employee"  widget="many2many_tags" attrs="{'invisible':[('send_mail', '=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="send_mail_to_l_and_K_dept" string="Confirm" type="object" class="btn btn-warning" icon="fa-check" confirm="Are you sure, you want to confirm?"/>

                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_cental_bench_engagement_report_wizard" name="Central Bench Publish Mail L&amp;K" src_model="sbu_bench_resource" res_model="central_bench_wizard_report" view_type="form" view_mode="form" view_id="central_bench_wizard_report_form" key2="client_action_multi" target="new"/>


         <record id="central_bench_sbu_wizard_form" model="ir.ui.view">
            <field name="name">central_bench_sbu_wizard_form</field>
            <field name="model">central_bench_sbu_wizard</field>
            <field name="arch" type="xml">
                <form string="Central Bench Engagement Report">
                    <sheet>
                        <group>
                            <field name="employee_ids" style="pointer-events:none;" readonly="1"/>
                        </group>
                        <group>
                            <field name="send_mail"/>
                        </group>
                         <group>
                            <field name="cc_employee"  widget="many2many_tags" attrs="{'invisible':[('send_mail', '=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="send_mail_to_rcm" string="Confirm" type="object" class="btn btn-warning" icon="fa-check" confirm="Are you sure, you want to confirm?"/>

                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_central_bench_sbu_wizard" name="Central Bench Publish Mail To SBU" src_model="sbu_bench_resource" res_model="central_bench_sbu_wizard" view_type="form" view_mode="form" view_id="central_bench_sbu_wizard_form" key2="client_action_multi" target="new"/>


    </data>
    </odoo>