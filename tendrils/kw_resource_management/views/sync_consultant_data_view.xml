<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sync_counsultant_data_view_tree" model="ir.ui.view">
            <field name="name">sync counsultant data view_tree</field>
            <field name="model">sync_consultant_data</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sync_link_id" invisible='1'/>
                    <field name="name"/>
                    <field name="email_id"/>
                    <field name="phone_no"/>
                    <field name="industry_segment"/>
                    <field name="country_preference"/>
                    <field name="experience"/>
                    <field name="qualification"/>
                    <field name="certification"/>
                    <field name="comments"/>
                    <field name="created_on"/>
                    <field name="consultant_cv"/>
                    <field name="industry_id" invisible='1'/>
                    <field name="deleted_flag" invisible='1'/>
                    <field name="course" invisible='1'/>
                    <field name="headline" invisible='1'/>
                    <field name="consultant_cv_name" invisible='1'/>              
                </tree>
            </field>
        </record>
        <record id="sync_counsultant_data_view_form" model="ir.ui.view">
            <field name="name">sync counsultant data view_form</field>
            <field name="model">sync_consultant_data</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email_id"/>
                            <field name="phone_no"/>
                            <field name="industry_segment"/>
                            <field name="country_preference"/>
                            <field name="experience"/>
                            <field name="qualification"/>
                            <field name="certification"/>
                            <field name="comments"/>
                            <field name="created_on"/>
                            <field name="consultant_cv"/>
                            <field name="industry_id" invisible='0'/>
                            <field name="deleted_flag" invisible='0'/>
                            <field name="course" invisible='0'/>
                            <field name="headline" invisible='0'/>
                            <field name="consultant_cv_name" invisible='0'/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sync_counsultant_data_view_search" model="ir.ui.view">
            <field name="name">sync counsultant data view_search</field>
            <field name="model">sync_consultant_data</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email_id"/>
                    <field name="phone_no"/>
                    <field name="industry_segment"/>
                    <field name="country_preference"/>
                    <field name="experience"/>
                    <field name="qualification"/>
                    <field name="certification"/>
                    <field name="comments"/>
                    <field name="created_on"/>
                    <filter string="Active" domain="[('active', '=',True)]" name="filter_active_consultant"/>
                    <filter string="Inactive" domain="[('active', '=',False)]" name="filter_inactive_consultant"/>
                </search>
            </field>
        </record>

        <record id="sync_consultant_action" model="ir.actions.act_window">
            <field name="name">Independent Counsultant</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sync_consultant_data</field>
            <field name="view_mode">tree,form,search</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="sync_consultant_data_child_menu"
                name="Independent Consultant"
                action="sync_consultant_action"
                parent="sbu_parent_menu"
                sequence="23"/>
        
    </data>
</odoo>