<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="kw_sbu_report_list_tree" model="ir.ui.view">
			<field name="name">SBU Report Employee List</field>
			<field name="model">hr.employee.sbu.mapped.detail.report</field>
			<field name="arch" type="xml">
				<tree create='false' import='false'>
					<field name="sbu_type" invisible="1"/>
					<field name="sbu_id" invisible="1"/>
					<field name="sbu_name"/>
					<field name="representative_id"/>
					<field name="project_id"/>
					<field name="project_manager"/>
					<field name="employee_id"/>
					<field name="designation"/>
				</tree>
			</field>
		</record>
		<record id="sbu_employee_report_view_search" model="ir.ui.view">
			<field name="name">SBU Report Employee Search</field>
			<field name="model">hr.employee.sbu.mapped.detail.report</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<!-- Add your fields here -->
					<field name="sbu_name"/>
					<field name="representative_id"/>
					<field name="project_id"/>
					<field name="project_manager"/>
					<field name="employee_id"/>
					<field name="designation"/>
					<group expand="0" string="Group By">
						<filter name="sbu_id" string="SBU" domain="" context="{'group_by':'sbu_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<record id="kw_sbu_report_employee_list_action" model="ir.actions.act_window">
			<field name="name">SBU Mapping Report</field>
			<field name="res_model">hr.employee.sbu.mapped.detail.report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No records found...
				</p>
			</field>
		</record>
		<!-- <menuitem id="sbu_report_employee_menu"
				  name="SBU Report"
				  action="kw_sbu_report_employee_list_action"
				  parent="kw_employee_info_system.employee_mis_report_menu"
		/> -->
	</data>
</odoo>