<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="project_time_management_tree" model="ir.ui.view">
            <field name="name">project_time_management.tree</field>
            <field name="model">project_time_management</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' decoration-danger="expired_value == 'expired' " decoration-info="expired_value == 'to_be_expired' " decoration-bf="expired_value in ('expired','to_be_expired') "   >
                    <!-- <field name="id" string="Sl.No"/> -->
                    <field name="code"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="name"/>
                    <field name="designation"/>
                    <field name="date_of_joining"/>
                    <field name="employement_type"/>
                    <field name="end_date" string="Employment/Contract End Date"/>
                    <field name="expired_value" invisible='1'/>
                    <field name="job_branch_id"/>
                    <field name="order_code"/>
                    <field name="order_name"/>
                    <field name="vendor_id" string='Client Name'/>
                    <field name="applied_eos" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="resource_deployment_search_view" model="ir.ui.view">
            <field name="name">Resource Deployment search view</field>
            <field name="model">project_time_management</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Employee'/>
                    <field name="designation" string="Employee Designation"/>
                    <field name="employement_type" string="Employment Type"/>
                    <field name="job_branch_id" string='Location'/>
                    <field name="emp_project_id" string='Order'/>
                    <field name="vendor_id" string="Client"/>
                    <separator string='Employee Role'/>
                    <!-- <filter string="Order-Yes" domain="[('emp_project_id','!=',False)]" name="order-yes"/>
                    <filter string="Order-No" domain="[('emp_project_id','=',False)]" name="order-no"/> -->
                    <separator/>
                    <filter string="Expired" domain="[('expired_value','=','expired')]" name="expired"/>
                    <filter string="To Expire" domain="[('expired_value','=','to_be_expired')]" name="to_be_expired"/>
                </search>
            </field>
        </record>

        <!-- kw_contract_end_log action window -->
        <record id="project_time_management_action" model="ir.actions.act_window">
            <field name="name">Project(T&amp;M) Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_time_management</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>      
    </data>
    </odoo>