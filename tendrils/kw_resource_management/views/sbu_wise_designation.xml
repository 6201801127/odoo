<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sbu_wise_designaiton_report_tree" model="ir.ui.view">
			<field name="name">sbu_wise_designaiton tree</field>
			<field name="model">sbu_wise_designaiton</field>
			<field name="arch" type="xml">
				<tree create='false' delete='false'>
					<field name="sbu_id" invisible="1"/>
					<field name="sbu_name" />
					<field name="employee_id" invisible="1"/>
					<field name="name"/>
					<field name="designation" />
					
					
				</tree>
			</field>
		</record>
		<record id="sbu_wise_designaiton_report_search" model="ir.ui.view">
			<field name="name">sbu_wise_designaiton Search</field>
			<field name="model">sbu_wise_designaiton</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<field name="sbu_id" invisible="1"/>
					<field name="sbu_name" />
					<field name="employee_id" invisible="1"/>
					<field name="name"/>
					<field name="designation" />
					<group expand="0" string="Group By">
						<filter name="sbu_name_group" string="SBU"  context="{'group_by':'sbu_id'}"/>
						<filter name="designation_group" string="Designation"  context="{'group_by':'designation'}"/>
					</group>
				</search>
			</field>
		</record>
		<record id="sbu_wise_designaiton_report_action" model="ir.actions.act_window">
			<field name="name">SBU Wise Designation Report</field>
			<field name="res_model">sbu_wise_designaiton</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
            <field name="context">{'search_default_sbu_name_group':1,'search_default_designation_group':1}</field>
			
			
		</record>
		
	</data>
</odoo>