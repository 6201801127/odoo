<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="kw_all_emp_skill_tree_view" model="ir.ui.view">
           <field name="name">Employee Skill Expertise tree</field>
           <field name="model">kw_employee_skill_expertise</field>
           <field name="arch" type="xml">
                <tree create='false' import="false">
                    <field name="employee_name"/>
                    <field name="employee_code"/>
                    <field name="deg_id"/>
                    <field name="department_id"/>
                    <!-- <field name="emp_work_email"/> -->
                    <field name="emp_location"/>
                    <field name="primary_skill_id"/>
                    <field name="primary_skill"/>
                    <field name="secondary_skill_id"/>
                    <field name="secondary_skill"/>
                    <field name="tertiary_skill_id"/>
                    <field name="tertiary_skill"/>
               </tree>
           </field>
        </record>
        <record id="kw_all_emp_skill_form_view" model="ir.ui.view">
			<field name="name">Employee skill Expertise form</field>
			<field name="model">kw_employee_skill_expertise</field>
			<field name="arch" type="xml">
				<form create='false'>
					<sheet>
						<group>
							<group string="Employee Details">
								<field name="emp_id" invisible="1"/>
                                <field name="employee_name"/>
                                <field name="employee_code"/>
                                <field name="deg_id" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                <field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                <field name="emp_work_email" invisible="1"/>
                                <field name="emp_location" options="{'no_open': True,'no_create':True,'no_edit':True}"/>

                                <field name="is_submitted" invisible="1"/>
                                <field name="reopen_survey"/>
                            </group>
                        </group>
                        <group>
                            <group string="Primary Skill">
                                <field name="primary_skill_id"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="primary_skill"/>
                            </group>

                            <group string="Secondary Skill">
                                <field name="secondary_skill_id"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="secondary_skill"/>
                            </group>

                            <group string="Tertiary Skill">
                                <field name="tertiary_skill_id"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="tertiary_skill"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_all_emp_skill_report_search_view" model="ir.ui.view">
            <field name="name">Employee skill Expertise search_view</field>
            <field name="model">kw_employee_skill_expertise</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_name"/>
                    <field name="deg_id"/>
                    <field name="department_id"/>
                    <field name="emp_work_email"/>
                    <field name="emp_location"/>
                    <field name="reopen_survey"/>
                    <group expand="1" string="Group By"/>
                    <filter name="group_by_department" string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                    <!-- <filter name="group_by_location" string="Location" domain="[]" context="{'group_by':'emp_location'}"/> -->
                </search>
            </field>
        </record>

        <record id="kw_all_emp_skill_action_window" model="ir.actions.act_window">
            <field name="name">Employee Skill Expertise</field>
            <field name="res_model">kw_employee_skill_expertise</field>
            <field name="search_view_id" ref="kw_all_emp_skill_report_search_view"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="domain">[('set_config_id.assessment_type','=','skill')]</field>
            <field name="search_view_id" ref="kw_user_test_report_view_search"/> -->
            <field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Add a Employee skill...
				</p>
			</field>
        </record>
        <record id="skill_survey_reopen_wizard_view_form" model="ir.ui.view">
            <field name="name">induction_plan_wizard_form</field>
            <field name="model">survey_reopened_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; color: red;">
                                Are you sure to Reopen the Skill Survey?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <center>
                            <button string="Yes" name="get_reopen_survey"
                                    type="object" default_focus="1" class="btn-success"/>
                            <button string="Cancel" class="btn-danger" special="cancel" style='margin-left:5px'/>
                        </center>
                    </footer>
                    
                </form>
            </field>
        </record> 

        <act_window id="action_reopen_survey_wizard" name="Reopen Survey" src_model="kw_employee_skill_expertise" res_model="survey_reopened_wizard" view_type="form" view_mode="form" view_id="skill_survey_reopen_wizard_view_form" key2="client_action_multi" target="new"/>

        
    </data>
</odoo>
							