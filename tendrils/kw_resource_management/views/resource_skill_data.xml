<odoo>
    <data>
        <!-- Apply Local Visit list view -->
        <record model="ir.ui.view" id="resource_skill_data_list">
            <field name="name">Resource Wise Skill</field>
            <field name="model">resource_skill_data</field>
            <field name="arch" type="xml">
                <tree string="Resource Wise Skill" edit='false' delete='false' create='false'>
                    <field name="employee_id"/>
                    <field name="emp_code"/>
                    <field name="emp_designation"/>
                    <field name="emp_location"/>
                    <field name="primary_skill_id"/>
                    <field name="secondary_skill_id"/>
                    <field name="tertial_skill_id"/>
                    <field name="active" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="resource_skill_data_search_view" model="ir.ui.view">
            <field name="name">resource_skill_data search view</field>
            <field name="model">resource_skill_data</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Employee'/>
                    <field name="primary_skill_id" string="Primary Skill"/>
                    <field name="secondary_skill_id" string='Secondary Skill'/>
                    <field name="tertial_skill_id" string='Tertial Skill'/>
                </search>
            </field>
        </record>

       <record model="ir.actions.act_window" id="resource_skill_data_action_window">
            <field name="name">Resource Wise Skill</field>
            <field name="res_model">resource_skill_data</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Skill Data Found...
                </p>
            </field>
        </record>

    </data>
</odoo>