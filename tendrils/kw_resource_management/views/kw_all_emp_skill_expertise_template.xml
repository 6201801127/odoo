<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <template id="kw_all_emp_skill_expertise" name="Skill Expertise">
			<t t-call="website.layout">
                <style>header{display:none;}</style>
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">

                            <div class="container card">
                                <div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content">
                                                <div class="modal-header d-flex justify-content-between text-center align-items-center">
                                                    <div class="">
                                                        <div class="card-header mb-9"> 
                                                            <img src="/kwantify_theme/static/src/img/csm_logo-black.png" class="" alt="logo"/>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                                <br/>
                                                <h2 class="display-6 text-left font-weight-bold mt-6 mb-4">
                                                    <span> Hi <t t-esc="emp_name"/>,</span>
                                                </h2>
                                                <br/>
                                                <h2 class="display-6 text-left font-weight-bold mt-6 mb-4" style="font-size: 20px;">
                                                    Kindly share your area of expertise in the below mentioned fields.
                                                     <br/> <br/>
                                                </h2>
                                                <h2 class="text-left font-weight-bold" style="font-size: 20px;color:red;">Note- *Only one skill to be mentioned in the “OTHERS” option (more than one skill will not be considered)</h2>
                                                <form name="frm_emp_skill" id="frm_emp_skills" class="form-horizontal"
                                                  method="post" action="/employee-skill-expertise-submit" autocomplete="off"
                                                  enctype="multipart/form-data">
                                                    <div class="card-body">
                                                        <div class="form-group row">
                                                            <t t-if="txtskil1" t-set="txtskil1" t-value="int(txtskil1)" />                                      
                                                            <label for="txtskil1" style="font-size: 18px;" class="col-sm-2 col-form-label font-weight-bold"> Primary area(s) of expertise: <span class="text-danger">*</span></label>
                                                            <div class="col-sm-8">
                                                                <select name="txtskil1" id="txtskil1_id" style="height: calc(2.0625rem + 26px);width: 122%;" class="form-control" placeholder="">
                                                                    <option value="">Select primary skill</option>
                                                                    <t t-foreach="skills" t-as="txtskills">
                                                                        <option t-att-value="txtskills.id"  t-att-bld="txtskil1"  t-att-selected="txtskills.id==txtskil1"><t t-esc="txtskills.name"/></option>
                                                                    </t>
                                                                    <option t-att-value="others.id" rel="other"><t t-esc="others.name"/></option>
                                                                </select>
                                                                <input name="txtarea1" class="form-control" style="display:none; height: calc(2.0625rem + 26px);width: 122%;margin-top: 10px;border:none;border-bottom: 2px solid black;" type="text" id="others_reason" placeholder="Enter your skill" required="required"></input>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row">
                                                            <t t-if="txtskil2" t-set="txtskil2" t-value="int(txtskil2)" />                                      
                                                            <label for="txtskil2" style="font-size: 18px;" class="col-sm-2 col-form-label font-weight-bold"> Secondary area(s) of expertise : </label>
                                                            <div class="col-sm-8">
                                                                <select name="txtskil2" id="txtskil2_id" style="height: calc(2.0625rem + 26px);width: 122%;" class="form-control" placeholder="">
                                                                    <option value="">Select secondary skill</option>
                                                                    <t t-foreach="skills" t-as="txtskills2">
                                                                        <option t-att-value="txtskills2.id"  t-att-bld="txtskil2"  t-att-selected="txtskills2.id==txtskil2"><t t-esc="txtskills2.name"/></option>
                                                                    </t>
                                                                    <option t-att-value="others.id" rel="other"><t t-esc="others.name"/></option>
                                                                </select>
                                                                <input name="txtarea2" class="form-control" style="display:none; height: calc(2.0625rem + 26px);width: 122%;margin-top: 10px;border:none;border-bottom: 2px solid black;" type="text" id="others_reason2" placeholder="Enter your secondary skill"></input>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <t t-if="txtskil3" t-set="txtskil3" t-value="int(txtskil3)" />                                      
                                                            <label for="txtskil3" style="font-size: 18px;" class="col-sm-2 col-form-label font-weight-bold"> Tertiary area(s) of expertise: </label>
                                                            <div class="col-sm-8">
                                                                <select name="txtskil3" id="txtskil3_id" style="height: calc(2.0625rem + 26px);width: 122%;" class="form-control" placeholder="">
                                                                    <option value="">Select tertiary skill</option>
                                                                    <t t-foreach="skills" t-as="txtskills3">
                                                                        <option t-att-value="txtskills3.id"  t-att-bld="txtskil3"  t-att-selected="txtskills3.id==txtskil3"><t t-esc="txtskills3.name"/></option>
                                                                    </t>
                                                                    <option t-att-value="others.id" rel="other"><t t-esc="others.name"/></option>
                                                                </select>
                                                                <input name="txtarea3" class="form-control" style="display:none; height: calc(2.0625rem + 26px);width: 122%;margin-top: 10px;border:none;border-bottom: 2px solid black;" type="text" id="others_reason3" placeholder="Enter your tertiary skill"></input>
                                                            </div>
                                                        </div>
                                                        <!-- <a class="btn btn-danger btn-lg font-weight-bold" t-attf-href='/cancel-skill-details'>
                                                            Cancel
                                                        </a> -->
                                                        <div class="text-center">
                                                            <button type="submit" target="_self" class="btn btn-success btn-lg text-center font-weight-bold">
                                                                Submit
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
											</div>
										</div>
									</div>
								</div>
                            </div>
						</section>
					</div>
				</div>
			</t>
		</template>
        <template id="skill_expertise_submission_template" name="skill_submission_template">
            <t t-call="website.layout">
                <style>
                    .o_main_navbar, .o_affix_enabled{display:none;}
                </style>
                <div class="wrap">
                    <div class="container">
                        <section class="service-request mt32">
                            <div class="container card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mx-auto">
                                            <div class="section__content text-center">
                                                <div class="swal2-icon swal2-success swal2-animate-success-icon" style="display: flex;" data-oe-model="ir.ui.view" data-oe-id="1641" data-oe-field="arch" data-oe-xpath="/t[1]/t[1]/div[1]/div[1]/div[1]/div[1]">
                                                    <span class="swal2-success-line-tip"/>
                                                    <span class="swal2-success-line-long"/>
                                                    <div class="swal2-success-ring"/>
                                                </div>
                                                <h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
                                                Thank you!
                                                    <br/>
                                                Your Skills has been submitted successfully.
                                                </h2>
                                                <a class="btn btn-primary btn-lg" style="background-color: #f7941d !important;" t-attf-href="/web">
                                                    <i class="fa fa-arrow-circle-left "/>
                                                &amp;nbsp;
                                                Go To Dashboard
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>

            </t>
        </template>
        <template id="skill_assessment_assets_skill" inherit_id="kw_resource_management.kw_all_emp_skill_expertise">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet" />
				<link href="/kw_skill_assessment/static/src/css/front_style.css?v=12" rel="stylesheet" />
				<script type="text/javascript" src="kwantify_theme/static/src/mdb/js/mdb.min.js" />
                <script src="/kwantify_theme/static/src/lib/jquery.validate.min.js"/>
                <script src="/kwantify_theme/static/src/lib/sweetalert.min.js"/>
                <script type="text/javascript" src="/kw_resource_management/static/src/js/emp_survey_skill.js" />
            </xpath>
		</template>
    </data>
</odoo>
