<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sbu_resource_mapping_tree" model="ir.ui.view">
            <field name="name">sbu_resource_mapping.tree</field>
            <field name="model">sbu_resource_mapping</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' decoration-danger="applied_eos == True">
                    <!-- <field name="id" string="Sl.No"/> -->
                    <field name="code"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="name"/>
                    <field name="designation"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type"/>
                    <field name="job_branch_id"/>
                    <field name="sbu_type"/>
                    <field name="sbu_name"/>
                    <field name="applied_eos" invisible='1'/>
                    <field name="category_kw_id" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="sbu_resource_mapping_search_view" model="ir.ui.view">
            <field name="name">sbu_resource_mapping search view</field>
            <field name="model">sbu_resource_mapping</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Employee'/>
                    <field name="designation" string="Employee Designation"/>
                    <field name="emp_category" string=' Employee Category'/>
                    <field name="emp_role" string='Employee Role'/>
                    <field name="employement_type" string="Employment Type"/>
                    <field name="job_branch_id" string='Location'/>
                    <field name="sbu_name"/>
                    <separator string='Employee Category'/>
                    <filter string="Coding" domain="[('category_kw_id','=',3)]" name="january_end_date"/>
                    <filter string="Delivery" domain="[('category_kw_id','=',7)]" name="january_end_date"/>
                    <filter string="Project Management" domain="[('category_kw_id','=',1)]" name="january_end_date"/>
                    <filter string="Team/Tech Lead" domain="[('category_kw_id','=',19)]" name="january_end_date"/>
                </search>
            </field>
        </record>

        <!-- kw_contract_end_log action window -->
        <record id="sbu_resource_mapping_action" model="ir.actions.act_window">
            <field name="name">Mapped Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_resource_mapping</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <record id="sbu_mapping_wizard_form" model="ir.ui.view">
            <field name="name">sbu_mapping_wizard form</field>
            <field name="model">sbu_mapping_wizard</field>
            <field name="arch" type="xml">
                <form string="Mapped Employees">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_ids"/>
                            <field name="sbu_master_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"
                                   required='1'
                                   string='SBU'
                                   domain="[('type', '=', 'sbu')]"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_sbu_mapping_of_employee" string="Confirm" type="object"
                                class="btn btn-warning" icon="fa-check"/>

                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- <act_window id="action_sbu_mapping_update"
                    name="SBU Tagging"
                    src_model="sbu_resource_mapping"
                    res_model="sbu_mapping_wizard"
                    view_type="form"
                    view_mode="form"
                    view_id="sbu_mapping_wizard_form"
                    key2="client_action_multi"
                    target="new"/> -->


    </data>
</odoo>