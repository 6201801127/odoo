<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="employee_inherits" model="ir.ui.view">
        <field name="name">employee.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <field name="primary_skill_id" position="after">
                <field name="sbu_type" 
                       groups="kw_resource_management.group_budget_manager,hr.group_hr_manager"
                       widget="radio"
                       options="{'horizontal': true}"/>
                <field name="sbu_master_id" attrs="{'invisible': [('sbu_type','=','none')]}"
                       groups="kw_resource_management.group_budget_manager,hr.group_hr_manager"
                       domain="[('type','=',sbu_type)]"
                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
            </field>

        </field>
    </record>
</odoo>