<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_setting_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.resource.mgmt</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Resource Management" string="Resource Management" data-key="kw_resource_management">
                    <h2>Resource Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div  class="mt16 row">
                                    <label for="mail_to_rcm" string="RCM Mail cc" class="col-3 col-lg-3 o_light_label"/>
                                    <field name="mail_to_rcm"  widget="many2many_tags"/>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-lg-6 o_setting_box o_responsible">
                            <div class="o_setting_left_pane">
                                <field name="skill_survey_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Employee skill survey" for="skill_survey_enabled"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>