<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="update_resource_skill_tree" model="ir.ui.view">
            <field name="name">update_resource_skill.tree</field>
            <field name="model">update_resource_skill</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' decoration-danger="applied_eos == True">
                    <field name="code"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="name"/>
                    <field name="designation"/>
                    <field name="department"/>
                    <field name="division"/>
                    <field name="sbu_id"/>
                    <field name="date_of_joining"/>
                    <field name="applied_eos" invisible='1'/>
                    <field name="primary_skill_id"/>
                    <field name="secondary_skill_id"/>
                    <field name="tertial_skill_id"/>
                </tree>
            </field>
        </record>

        <record id="update_resource_skill_search_view" model="ir.ui.view">
            <field name="name">update_resource_skill search view</field>
            <field name="model">update_resource_skill</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Employee'/>
                    <field name="designation" string="Employee Designation"/>
                    <field name="department" string='Department'/>
                </search>
            </field>
        </record>

        <!-- kw_contract_end_log action window -->
        <record id="update_resource_skill_action" model="ir.actions.act_window">
            <field name="name">SBU Skill Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update_resource_skill</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>


        <record id="skill_update_wizard_form" model="ir.ui.view">
            <field name="name">skill_update_wizard form</field>
            <field name="model">skill_update_wizard</field>
            <field name="arch" type="xml">
                <form string="Update Skill">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_ids" readonly="1" style="pointer-events:none;">
                                    <tree>
                                        <field name="code"/>
                                        <field name="employee_id" invisible='1'/>
                                        <field name="name"/>
                                        <field name="designation"/>
                                        <field name="department"/>
                                        <field name="section"/>
                                        <field name="practise"/>
                                        <field name="date_of_joining"/>
                                        <field name="job_branch_id"/>
                                        <field name="primary_skill_id"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="primary_skill_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                <field name="secondary_skill_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" />
                                <field name="tertial_skill_id"  options="{'no_open': True,'no_create':True,'no_edit':True}" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_resource_skill" string="Confirm" type="object" class="btn btn-warning" icon="fa-check" confirm="Are you sure, you want to confirm?"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_update_resource_skill"
                    name="Update Skill" 
                    src_model="update_resource_skill" 
                    res_model="skill_update_wizard" view_type="form" 
                    view_mode="form" view_id="skill_update_wizard_form" 
                    key2="client_action_multi" target="new"
                    groups='kw_resource_management.group_budget_manager,kw_skill_assessment.group_kw_skill_assessment_manager'/>

    </data>
</odoo>