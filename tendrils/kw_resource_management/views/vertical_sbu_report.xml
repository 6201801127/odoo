<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sbu_report_employees_vertical_list" model="ir.ui.view">
			<field name="name">sbu_report_employees_vertical List</field>
			<field name="model">sbu_report_employees_vertical</field>
			<field name="arch" type="xml">
				<tree create='false' import='false' class="text-center">
					<field name="location_id" class="text-center"/>
                    <field name="skill_id" class="text-center"/>

                    <field name="existing_manger" class="text-center fte_opening"/>
                    <field name="existing_tl_pl" class="text-center fte_opening"/>
                    <field name="existing_sr_dev" class="text-center fte_opening"/>
                    <field name="existing_dev" class="text-center fte_opening"/>
                    <field name="existing_intern" class="text-center fte_opening"/>
                    <field name="existing_ba" class="text-center fte_opening"/>

                    <field name="bench_manger" class="text-center fte_totalonboard"/>
                    <field name="bench_tl_pl" class="text-center fte_totalonboard"/>
                    <field name="bench_sr_dev" class="text-center fte_totalonboard"/>
                    <field name="bench_dev" class="text-center fte_totalonboard"/>
                    <field name="bench_intern" class="text-center fte_totalonboard"/>
                    <field name="bench_ba" class="text-center fte_totalonboard"/>

                    <field name="forecasted_manger" class="text-center fte_closing"/>
                    <field name="forecasted_tl_pl" class="text-center fte_closing"/>
                    <field name="forecasted_sr_dev" class="text-center fte_closing"/>
                    <field name="forecasted_dev" class="text-center fte_closing"/>
                    <field name="forecasted_intern" class="text-center fte_closing"/>
                    <field name="forecasted_ba" class="text-center fte_closing"/>
				</tree>
			</field>
		</record>
		
		<record id="sbu_report_employees_vertical_action" model="ir.actions.act_window">
			<field name="name">SBU Vertical Report</field>
			<field name="res_model">sbu_report_employees_vertical</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
		</record>
		<menuitem id="sbu_report_employees_vertical_menu"
				  name="SBU Vertical Report"
				  action="sbu_report_employees_vertical_action"
				  parent="sbu_parent_menu"
		/>
	</data>
</odoo>