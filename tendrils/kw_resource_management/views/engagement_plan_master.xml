        <record id="kw_engagement_master_tree" model="ir.ui.view">
            <field name="name">kw_engagement_master.tree</field>
            <field name="model">kw_engagement_master</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="name" attrs="{'required':True}"/>
                    <field name="code" attrs="{'required':True}"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="kw_engagement_master_action" model="ir.actions.act_window">
            <field name="name">Engagement Plan Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_engagement_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

    </data>
