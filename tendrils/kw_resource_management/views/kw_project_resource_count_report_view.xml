<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="kw_project_resource_count_report_tree" model="ir.ui.view">
			<field name="name">kw_project_resource_count_report</field>
			<field name="model">kw_project_resource_count_report</field>
			<field name="arch" type="xml">
				<tree create='false' delete='false'>
                    <field name="id"  string='Sl No.' invisible="1"/>
					<!-- <field name="sbu_type"/> -->
					<field name="sbu_name" />
					<field name="order_oppurtinity"/>
					<field name="project_name" />
                    <field name="project_manager" />
					<field name="reviewer" />
                    <field name="project_manager_id" invisible="1"/>
					<field name="sbu_id" invisible="1"/>
					<field name="total_count"/>
					<field name="pm_count" sum="pm_count"/>
					<field name="team_lead_count" sum="team_lead_count"/>
					<field name="ba_count" sum="ba_count"/>
                    <field name="developer_count" sum="developer_count"/>
					<field name="rsrc_dplmnt_count"/>
					<field name="horizontal_count" sum="developer_count"/>
					<button name="view_details_action_button" type="object" string="View Details" class="oe_highlight"/>
					
				</tree>
			</field>
		</record>
		<record id="kw_project_resource_count_report_search" model="ir.ui.view">
			<field name="name">SBU Report Employee Search</field>
			<field name="model">kw_project_resource_count_report</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<!-- Add your fields here -->
					<field name="order_oppurtinity"/>
					<field name="sbu_name" />
					<field name="project_name" />
                    <field name="project_manager" />
                    <field name="reviewer" />	
				</search>
			</field>
		</record>
		<record id="kw_project_resource_count_report_action" model="ir.actions.act_window">
			<field name="name">Project wise Report</field>
			<field name="res_model">kw_project_resource_count_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No records found...
				</p>
			</field>
		</record>
		
	</data>
</odoo>