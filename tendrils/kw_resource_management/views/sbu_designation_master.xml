<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sbu_designation_master_tree" model="ir.ui.view">
            <field name="name">sbu_designation_master.tree</field>
            <field name="model">sbu_designation_master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="designation_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        
        
        <record id="sbu_designation_master_form" model="ir.ui.view">
            <field name="name">sbu_designation_master.form</field>
            <field name="model">sbu_designation_master</field>
            <field name="arch" type="xml">
                <form>
                	
                	<sheet>
                		<group>
                			<field name="name" />
                            <field name="designation_ids" widget="many2many_tags"/>
                		</group>
                		
						
                	</sheet>
                </form>
            </field>
        </record>

        

        
        <record id="sbu_designation_master_action" model="ir.actions.act_window">
            <field name="name">SBU Designation Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_designation_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="sbu_configuration_menu" name="Configuration" parent="sbu_root_menu"  sequence="6"/>
        <menuitem id="sbu_designation_master_menu" name="SBU Designation Master" parent="sbu_configuration_menu" action="sbu_designation_master_action" sequence="1"/>
    </data>
    </odoo>