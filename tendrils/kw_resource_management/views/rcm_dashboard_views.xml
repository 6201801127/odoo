<odoo>
    <data>
        <record id="rcm_action_dashboard" model="ir.actions.client">
            <field name="name">Talent Pool Analytics Dashboard</field>
            <field name="tag">kw_resource_management.rcm_dashboard</field>
        </record>
        <record id="rcm_work_force_action_dashboard" model="ir.actions.client">
            <field name="name">Work Force Analytics Dashboard</field>
            <field name="tag">kw_resource_management.rcm_work_force_analytics_dashboard</field>
        </record>
        <record id="rcm_skill_data_action_dashboard" model="ir.actions.client">
            <field name="name">Skill Dashboard</field>
            <field name="tag">kw_resource_management.rcm_skill_data_dashboard</field>
        </record>
    </data>
    <template id="assets_backend" name="Hr Dashboard assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/kw_resource_management/static/src/js/rcm_dashboard.js"/>
            <script type="text/javascript" src="/kw_resource_management/static/src/js/work_force_analytics_dashboard.js"/>
            <script type="text/javascript" src="/kw_resource_management/static/src/js/skill_analytics_dashboard.js"/>
            <link rel="stylesheet" href="/kw_resource_management/static/src/css/rcm_dashboard.css"/>
        </xpath>
    </template>
</odoo>
