<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sbu_resource_tree" model="ir.ui.view">
            <field name="name">sbu resource tree view</field>
            <field name="model">sbu_wise_resource</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <!-- <field name="id" string="Sl.No"/> -->
                    <field name="code"/>
                    <field name="name"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="designation"/>
                    <field name="practise"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type" invisible='1'/>
                    <field name="primary_skill_id"/>
                    <field name="sbu_type" invisible='1'/>
                    <field name="sbu_id" invisible='1'/>
                    <field name="sbu_name"/>
                    <field name="total_experience_display" string="Exp."/>
                    <field name="project_name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="job_branch_id"/>
                </tree>
            </field>
        </record>
        <record id="sbu_resource_tree_search_view" model="ir.ui.view">
            <field name="name">Project wise search view</field>
            <field name="model">sbu_wise_resource</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" string='Employee'/>
                    <field name="project_name" string="Project Name"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_grade" string="Grade" context="{'group_by':'emp_grade'}"/>
                        <filter name="group_by_band" string="Band" context="{'group_by':'emp_band'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- kw_contract_end_log action window -->
        <record id="sbu_resource_action" model="ir.actions.act_window">
            <field name="name">SBU Resource Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_wise_resource</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>