<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="emp_dept_count_report_list" model="ir.ui.view">
			<field name="name">Department Report List</field>
			<field name="model">employee_deparment_count_report</field>
			<field name="arch" type="xml">
				<tree create='false' import='false'>
					<field name="department_id" />
					<field name="emp_role"/>
					<field name="total_no"/>
				</tree>
			</field>
		</record>
		
		<record id="emp_dept_count_report_list_action" model="ir.actions.act_window">
			<field name="name">Department Report</field>
			<field name="res_model">employee_deparment_count_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No records found...
				</p>
			</field>
		</record>
		<menuitem id="emp_department_count_report_menu"
				  name="Department Report"
				  action="emp_dept_count_report_list_action"
				  parent="sbu_parent_menu"
		/>
	</data>
</odoo>