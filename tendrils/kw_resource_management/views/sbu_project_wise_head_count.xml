<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sbu_project_wise_head_count_report_tree" model="ir.ui.view">
			<field name="name">sbu_project_wise_head_count tree</field>
			<field name="model">sbu_project_wise_head_count</field>
			<field name="arch" type="xml">
				<tree create='false' delete='false'>
					<field name="sbu_name" />
					<field name="project_id" />
					<field name="designation_id" />
                    <field name="head_count" />
					<button name="get_project_emp_details" type="object" class ='btn-info fa fa-th-list'/>
				</tree>
			</field>
		</record>
		<record id="sbu_project_wise_head_count_emp_details_tree" model="ir.ui.view">
			<field name="name">sbu_project_wise_head_count_emp_details tree</field>
			<field name="model">sbu_project_wise_get_emp_details</field>
			<field name="arch" type="xml">
				<tree create='false' delete='false'>
					<field name="emp_id"/>
					<field name="project_id"/>
					<field name="designation_id" />
					<field name="sbu_name" />
				</tree>
			</field>
		</record>
		<record id="sbu_project_wise_head_count_report_search" model="ir.ui.view">
			<field name="name">sbu_project_wise_head_count Search</field>
			<field name="model">sbu_project_wise_head_count</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<!-- Add your fields here -->
					<field name="sbu_name" />
					<field name="project_id"/>
					<field name="designation_id" />
                    <field name="head_count" />
					<group expand="0" string="Group By">
						<filter name="group_sbu_name" string="SBU"  context="{'group_by':'sbu_name'}"/>
						<filter name="group_project_name" string="Project"  context="{'group_by':'project_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<record id="sbu_project_wise_head_count_action_report" model="ir.actions.act_window">
			<field name="name">SBU Project wise Report</field>
			<field name="res_model">sbu_project_wise_head_count</field>
			<field name="view_mode">tree,search</field>
			<field name="view_type">form</field>
			<field name="domain">[]</field>
            <field name="context">{'search_default_group_sbu_name':1 ,'search_default_group_project_name':1}</field>
		</record>
		
	</data>
</odoo>