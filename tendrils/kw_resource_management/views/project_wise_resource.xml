<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="Project_wise_resource_tree" model="ir.ui.view">
			<field name="name">Project Wise Resource Tagging</field>
			<field name="model">project_wise_resource</field>
			<field name="arch" type="xml">
				<tree create='0' edit='0' delete='0'>
					<field name="id" string='Sl No.' invisible="1"/>
					<field name="code"/>
					<field name="name"/>
					<field name="designation"/>
					<field name="job_branch_id"/>
					<field name="date_of_joining"/>
					<field name="emp_role"/>
					<field name="emp_category"/>
					<field name="employement_type"/>
					<field name="practise_id"/>
					<field name="resource_type"/>
					<field name="project_manager_id" invisible="1"/>
					<field name="project_sbu_id" invisible="1"/>
					<field name="sbu"/>
					<field name="sbu_id"/>
					<field name="order_oppurtinity"/>
					<field name="project_name"/>
					<!-- <field name="primary_skill_id"/> -->
				</tree>
			</field>
		</record>
		
		<record id="Project_wise_resource_report_search" model="ir.ui.view">
			<field name="name">Project Wise Resource Search</field>
			<field name="model">project_wise_resource</field>
			<field name="arch" type="xml">
				<search>
					<filter name="sbu_id" string="Project SBU" domain="[]" context="{'group_by':'sbu_id'}"/>	
					<field name="order_oppurtinity"/>
                    <field name="date_of_joining" />
                    <field name="job_branch_id" />
					<filter name="job_branch_id" string="Location" domain="[]" context="{'group_by':'job_branch_id'}"/>
					<filter name="group_by_employee" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>				
					<filter name="KfyWo/OPP" string="Work Order/Opp" domain="[]" context="{'group_by':'order_oppurtinity'}"/>
					<filter name="employement_type" string="Employement Type" domain="[]" context="{'group_by':'employement_type'}"/>
					<filter name="project_name" string="Project" domain="[]" context="{'group_by':'project_name'}"/>	
					<filter name="employee_id" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
				</search>
			</field>
		</record>



		<record id="Project_wise_resource_report_pivot" model="ir.ui.view">
            <field name="name">project_wise_resource.pivot</field>
            <field name="model">project_wise_resource</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
					<field name="resource_type"/>
					<!-- <field name="sbu_name"/> -->
					<field name="sbu"/>
					<field name="project_name" type="row"/>
					<field name="name"/>
					<field name="designation"/>
					<field name="job_branch_id"/>
					<field name="emp_role"/>
					<field name="emp_category"/>
					<field name="employement_type"/>
					
                </pivot>
            </field>
        </record>
			

		<!-- kw_contract_end_log action window -->
		<record id="Project_wise_resource_action" model="ir.actions.act_window">
			<field name="name">Project Wise Report-(Total)</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">project_wise_resource</field>
			<field name="view_mode">tree,pivot</field>
			<field name="view_type">form</field>
			<field name="context">{'search_default_project_name':1,'search_default_sbu_id':1,'search_default_employee_id':1}</field>
		</record>

	</data>
</odoo>