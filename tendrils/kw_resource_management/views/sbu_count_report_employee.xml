<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="kw_sbu_count_report_list_tree" model="ir.ui.view">
			<field name="name">SBU Count Report Employee List</field>
			<field name="model">hr.employee.sbu.mapping.report</field>
			<field name="arch" type="xml">
				<tree create='false' import='false'>
				    <field name="sequence" invisible="1"/>
					<field name="sbu_name"/>
					<field name="representative_id"/>
					<field name="project_count" class="text-center" sum="Total"/>
					<field name="pm_count" class="text-center" sum="Total"/>
					<field name="team_member_count" class="text-center" sum="Total"/>
                    <button name="action_button_view_form"  type="object" string="View Details" class="oe_highlight"/>
				</tree>
			</field>
		</record>
		<record id="sbu_employee_count_report_view_search" model="ir.ui.view">
			<field name="name">SBU Count Employee Search</field>
			<field name="model">hr.employee.sbu.mapping.report</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<!-- Add your fields here -->
					<field name="sbu_name"/>
					<field name="representative_id"/>

					<group expand="0" string="Group By">
						<filter name="sbu_name" string="SBU" domain="" context="{'group_by':'sbu_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<record id="kw_sbu_count_report_employee_list_action" model="ir.actions.act_window">
			<field name="name">SBU Mapping Report</field>
			<field name="res_model">hr.employee.sbu.mapping.report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">

				<p class="o_view_nocontent_smiling_face">
					No records found...
				</p>
			</field>
		</record>
		<menuitem id="sbu_count_report_employee_menu"
				name="SBU Report"
				action="kw_sbu_count_report_employee_list_action"
				parent="kw_employee_info_system.employee_mis_report_menu"
				groups="hr.group_hr_manager,kw_employee.group_hr_management"	  
		/>
	</data>
</odoo>