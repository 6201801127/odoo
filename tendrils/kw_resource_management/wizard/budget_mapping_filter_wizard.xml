<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="budget_mapping_wizard_form" model="ir.ui.view">
			<field name="name">budget_mapping_wizard form</field>
			<field name="model">budget_mapping_wizard</field>
			<field name="arch" type="xml">
				<form>
					<div>
						<group>
							<field name="emp_role" options="{'no_open':True,'no_create_edit': True,'no_create': True}"/>
							<field name="emp_category"
							       options="{'no_open':True,'no_create_edit': True,'no_create': True}"/>
							<field name="employement_type"
							       options="{'no_open':True,'no_create_edit': True,'no_create': True}"/>
						</group>
					</div>
					<footer>
						<button string='Filter' name="button_budget_mapping_filter" type="object"
						        class="btn font-weight-bold text-white" style="background-color: #108fbb;"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="budget_mapping_wizard_actions" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">HRMS Budget Mapping</field>
			<field name="res_model">budget_mapping_wizard</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>	
	</data>
</odoo>
