<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_forecasted_release_report_wizard" model="ir.ui.view">
        <field name="name">forecasted.release.report.wizard.form</field>
        <field name="model">forecasted_release_report_wizard</field>
        <field name="arch" type="xml">
            <form string="Forecasted Release Report Wizard">
                <group>
                    <field name="fiscal_year"/>
                    <field name="emp_category" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_open_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_forecasted_release_report_wizard" model="ir.actions.act_window">
        <field name="name">Forecasted Release Report Wizard</field>
        <field name="res_model">forecasted_release_report_wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
