<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="resource_qty_update_wizard_form" model="ir.ui.view">
			<field name="name">resource_qty_update_wizard form</field>
			<field name="model">resource_qty_update_wizard</field>
			<field name="arch" type="xml">
				<form>
					<div>
						<group>
							<field name="resource_map_id" invisible='1'/>
							<field name="module_short_name" readonly='1'/>
							<field name="resource_no" readonly='1'/>
							<field name="resource_available" required= '1'/>
						</group>
					</div>
					<footer>
						<button string='Update' name="button_resource_qty_update" type="object"
						        class="btn font-weight-bold text-white" style="background-color: #108fbb;"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="resource_qty_update_wizard_actions" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Update Resource Available Quantity</field>
			<field name="res_model">resource_qty_update_wizard</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>	
	</data>
</odoo>
