<odoo>
    <data>
        <record model="ir.ui.view" id="sbu_approve_remark_view">
            <field name="name">Resource Management Approve Remark</field>
            <field name="model">sbu_approve_remark</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="remark" required='1'/>
                        </group>
                        <footer>
                            <center>
                                <button name="approve_btn" type="object" string="Approve" class="oe_highlight"/>
                                <button string="Cancel" class="btn-default " special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>