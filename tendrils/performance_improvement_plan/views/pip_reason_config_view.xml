<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="performance_improvement_plan_reason_form" model="ir.ui.view">
            <field name="name">performance_improvement_plan_reason_form</field>
            <field name="model">pip_reason_issue_config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="status_active"/>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="performance_improvement_plan_reason_list">
            <field name="name">performance_improvement_plan_reason_list</field>
            <field name="model">pip_reason_issue_config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="status_active"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="performance_improvement_reason_take_action" model="ir.actions.act_window">
            <field name="name">PIP Reasons</field>
            <field name="res_model">pip_reason_issue_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('performance_improvement_plan_reason_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('performance_improvement_plan_reason_form')})]"/>
        </record>

        <record model="ir.ui.view" id="pip_user_access_list">
            <field name="name">pip_user_access_list</field>
            <field name="model">pip_user_access</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom' delete='1'>
                    <field name="designation_id" invisible="1"
                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="grade_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="empl_id" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="pip_user_access_action">
            <field name="name">User Access</field>
            <field name="res_model">pip_user_access</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Configuration"
                  id="pip_issue_menu1"
                  parent='pip_root_menu'
                  groups="performance_improvement_plan.group_pip_manager"
                  sequence="3"/>
        <menuitem name="PIP Reasons"
                  id="pip_issue_menu2"
                  parent='pip_issue_menu1'
                  action='performance_improvement_reason_take_action'
                  sequence="1"/>

        <menuitem name="User Access" id="pip_user_access_menu" parent='pip_issue_menu1'
                  action='pip_user_access_action'
                  sequence="2"/>

        <record model="ir.ui.view" id="pip_manager_access_list">
            <field name="name">pip_manager_access_list</field>
            <field name="model">pip_manager_access</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom' delete='1'>
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="pip_manager_access_action">
            <field name="name">Manager Access</field>
            <field name="res_model">pip_manager_access</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="Manager Access"
                  id="pip_manager_access_menu"
                  parent='pip_issue_menu1'
                  action='pip_manager_access_action'
                  sequence="3"/>


        <record model="ir.ui.view" id="pip_report_access_list">
            <field name="name">pip_report_access_list</field>
            <field name="model">pip_report_access</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom' delete='1'>
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pip_report_access_action">
            <field name="name">Report Access</field>
            <field name="res_model">pip_report_access</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="Report View Access"
                  id="pip_report_access_menu"
                  parent='pip_issue_menu1'
                  action='pip_report_access_action'
                  sequence="4"/>
        
        <record model="ir.ui.view" id="pip_officer_access_list">
            <field name="name">pip_officer_access_list</field>
            <field name="model">pip_notify_officer_access</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom' delete='1'>
                    <field name="employee_id" required="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pip_officer_access_action">
            <field name="name">Notify User Access</field>
            <field name="res_model">pip_notify_officer_access</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="Notify User Access"
                    id="pip_officers_access_menu"
                    parent='pip_issue_menu1'
                    action='pip_officer_access_action'
                    sequence="5"/>

        <record model="ir.ui.view" id="pip_lk_access_list">
            <field name="name">pip_officer_access_list</field>
            <field name="model">pip_l_k_training_access</field>
            <field name="arch" type="xml">
                <tree import='0' editable='bottom' delete='1'>
                    <field name="employee_id" required="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pip_lk_access_action">
            <field name="name">L&amp;k User Access</field>
            <field name="res_model">pip_l_k_training_access</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="L&amp;K User Access"
                    id="pip_lk_access_menu"
                    parent='pip_issue_menu1'
                    action='pip_lk_access_action'
                    sequence="6"/>

    </data>
</odoo>
