    <record id="email_template_user_doc_pip" model="mail.template">
        <field name="name">PIP User Doc Template</field>
        <field name="email_from">${ctx['email_from'] or ''}</field>
        <field name="subject">${ctx['subject'] or ''}</field>
        <field name="email_to">${ctx['email_to'] or ''}</field>
        <field name="email_cc">${ctx['mail_cc'] or ''}</field>
        <field name="model_id" ref="model_kw_pip_counselling_details"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html">
            <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                        <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small>
                                        <strong> ${ctx['name']},</strong>
                                    </h5>
                                    % if ctx['mail_for'] == 'User_doc':
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                            This is to inform regarding the Upload document of your Deliverables outcome
                                            and update the Status.
                                        </p>
                                        <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                            <tr>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Deliverables </th>
                                                <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Expected Outcome</th>
                                            </tr>
                                            % for rec in object.hr_feedback_details_ids:
                                                <tr>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.deliverable_rec}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.excepted_achivement_rec}
                                                    </td>
                                                </tr>
                                            % endfor
                                        </table>
                                    % endif
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
            ]]>
        </field>
    </record>

       
</odoo>
