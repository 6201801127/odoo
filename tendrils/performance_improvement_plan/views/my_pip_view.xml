<odoo>
    <data>
         <record id="kw_pip_user_details_form_view" model="ir.ui.view">
            <field name="name">MY PIP</field>
            <field name="model">kw_pip_counselling_details</field>
            <field name="arch" type="xml">
                <form string="User Feedback" create='false' duplicate='false' delete='false'>
                    <style>
                        .o_form_view .o_group .o_form_label {width: 305px;}
                    </style>
                    <header>
                        <!-- <button name="agree_observation" string="Agree" type="object"
                                confirm="Are you sure, you want to Agree?"
                                class="btn-success"
                                attrs="{'invisible':[('user_agree_observation','in',['Agree','Disagree'])]}"/>
                        <button name="disagree_observation" string="Don't Agree" type="object"
                                confirm="Are you sure, you don't want to Agree?"
                                class="btn-danger"
                                attrs="{'invisible':[('user_agree_observation','in',['Agree','Disagree'])]}"/> -->

                        <field name="feedback_status" widget="statusbar" statusbar_visible="0,1,2,3,4,5,6"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="in_observe" invisible="1"/>
                                <field name="hide_hr_feedback" invisible="1"/>
                                <field name="assessee_id" readonly='1'
                                       options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                <field name="assign_assessors_ids" widget="many2many_tags"
                                       options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1"/>
                            </group>
                            <group>
                                <field name="assessment_date" autocomplete='off' readonly="1"/>
                            </group>
                        </group>
                        <group string="Assessors Feedback">
                            <field name="hr_assessor_details_ids" nolabel="1" attrs="{'readonly': [('feedback_status','in',['2','3','4','5','7','6'])]}">
                                <tree editable="bottom" delete="false" create="false">
                                    <field name="assessor_id" readonly="1"/>
                                    <field name="keep_observation" readonly="1"/>
                                    <field name="observation_duration" readonly="1"/>
                                    <field name="pip_assessor_counselling_id" readonly="1" invisible="1"/>
                                    <field name="improve_remark" readonly="1"/>
                                    <field name="assessor_status"  invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="assessor_id"  options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1"/>
                                        <field name="keep_observation" readonly="1"/>
                                        <field name="observation_duration" readonly="1"/>
                                        <field name="pip_assessor_counselling_id" readonly="1" invisible="1"/>
                                        <field name="improve_remark" readonly="1"/>
                                        <field name="assessor_status"  invisible="1"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group string="Set Deliverables">
                            <field name="hr_feedback_details_ids" nolabel="1">
                                <tree delete="false" create="false" editable="top">
                                    <field name="deliverable_rec" readonly="1"/>
                                    <field name="excepted_achivement_rec" readonly="1"/>
                                    <field name="upload_doc_user_enable" invisible="1"/>
                                    <field name="deliver_status_user"
                                            attrs="{'readonly':[('upload_doc_user_enable','=',False)]}"/>
                                    <field name="deliverables_uplod_doc" widget="binary" filename="file_name"
                                            attrs="{'readonly':[('upload_doc_user_enable','=',False)]}"
                                            string="Upload Documents(doc, docs, xls, xlxs, pdf, pptx and zip,max size of 2 MB per document)"/>
                                    <field name="file_name" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="deliverable_rec" readonly="1"/>
                                        <field name="excepted_achivement_rec" readonly="1"/>
                                        <field name="upload_doc_user_enable" invisible="1"/>
                                        <field name="deliver_status_user"
                                                attrs="{'readonly':[('upload_doc_user_enable','=',False)]}"/>
                                        <field name="deliverables_uplod_doc" widget="binary" filename="file_name"
                                                attrs="{'readonly':[('upload_doc_user_enable','=',False)]}"
                                                string="Upload Documents(doc, docs, xls, xlxs, pdf, pptx and zip,max size of 2 MB per document)"/>
                                        <field name="file_name" invisible="1"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group>
                            <!-- <group>
                                <field name="timeline_improvement" readonly="1"/>
                                <field name="next_counselling" readonly="1"/>
                                <field name="user_agree_observation" string="Agreed/Not Agreed" readonly="1"
                                       widget="radio" options="{'horizontal': true}" required="1"/>
                            </group> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
