<odoo>
    <data>
        <record id="remarks_approver_view_pip_form" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                               Do you want to Recommend for Counselling  ?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn" 
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="remarks_approver_view_pip_training_recommend_form" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                               Do you want to Recommend for Training  ?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn" 
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="remarks_approver_final_close_view_pip_form" model="ir.ui.view">
            <field name="name">Closed</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                               Are you sure, you want to Close the PIP process ?
                            </p>
                        </div>
                    </div>
                    <group>
                        <field name="pip_details_id" invisible="1"></field>
                        <field name="cc_mails" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="assessor_counselling_feedback_view_pip_form" model="ir.ui.view">
            <field name="name">Feedback</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <group>
                                
                                <field name="pip_details_id" invisible="1"/>
                                <field name="keep_observation" widget="radio" options="{'horizontal': true}" required="1"/>
                                <field name="observation_duration" attrs="{'invisible':[('keep_observation', 'in', ['No',False])],'required':[('keep_observation', 'in', ['Yes'])]}"/>
                                <!-- <field name="release_duration" attrs="{'invisible':[('keep_observation', 'in', ['Yes',False])]}"/>                             -->
                                <field name="observation_remarks" required="1"/>
                                
                            </group>
                            <group attrs="{'invisible':[('keep_observation','in',[False,'No'])],'required':[('keep_observation','=','Yes')]}">
                                <field name="feedback_ids" nolabel="1" attrs="{'required':[('keep_observation','=','Yes')]}">
                                    <tree editable="bottom" required="1">
                                        <field name="deliverable_rec" attrs="{'required':[('required_feedback', '=', True)]}"></field>
                                        <field name="excepted_achivement_rec" attrs="{'required':[('required_feedback', '=', True)]}"></field>
                                        <field name="required_feedback" invisible="1"/>
                                    </tree>
                                </field>
                            </group>

                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="assessor_improvement_feedback_view_pip_form" model="ir.ui.view">
            <field name="name">Feedback</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <field name="feedback_ids">
                                <tree editable="bottom" nolabel= "1" create="false" edit="true" delete="false">
                                    <field name="deliverable_rec" style="width:150px;" readonly='1' force_save="1"/>
                                    <field name="excepted_achivement_rec"  style="width:150px;" readonly='1' force_save="1"/>
                                    <field name="accessor_final_feedback" style="width:150px;"/>
                                    <field name="improvement_data" class="custom-width" required="1"/>
                                </tree>
                            </field>
                            <group>
                                <group string="Final Status">
                                    <field name="assessor_final_outcome" required="1"/>
                                    <field name="assessor_final_remark" required="1"/>

                                </group>
                            </group>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="pip_counselling_take_action" model="ir.ui.view">
            <field name="name">Counselling</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <group>
                                <field name="pip_id"/>
                                <field name="assessee_id" required="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                <field name="assessor_id" required="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                <field name="counselling_date" required="1"/>
                            </group>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="view_hr_counselling_update_form" model="ir.ui.view">
            <field name="name">Counselling Form</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form create="false">
                    <script>
                        $(document).ready(function(){    
                            $(".modal-footer").hide();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <table class="o_list_view table table-sm table-hover ">
                                <thead>
                                <tr>
                                    <td>Feedback (post counselling) - 1st instance</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Deliverables</td>
                                    <td>Expected Achievement</td>
                                </tr>
                                </thead>
                                <tbody class="ui-sortable">
                                    
                                    <tr>
                                        <td>
                                            <field name="deliverable_rec"/>
                                        </td>
                                        <td>
                                            <field name="excepted_achivement_rec"/>
                                        </td>
                                        
                                    </tr>
                                     <tr>
                                        <td>
                                            <field name="deliverable_rec"/>
                                        </td>
                                        <td>
                                            <field name="excepted_achivement_rec"/>
                                        </td>
                                        
                                    </tr>
                                     <tr>
                                        <td>
                                            <field name="deliverable_rec"/>
                                        </td>
                                        <td>
                                            <field name="excepted_achivement_rec"/>
                                        </td>
                                        
                                    </tr>
                                     <tr>
                                        <td>
                                            <field name="deliverable_rec"/>
                                        </td>
                                        <td>
                                            <field name="excepted_achivement_rec"/>
                                        </td>
                                        
                                    </tr>
                                    <tr>
                                        <td>
                                            <field name="deliverable_rec"/>
                                        </td>
                                        <td>
                                            <field name="excepted_achivement_rec"/>
                                        </td>
                                        
                                    </tr>
                                    <tr>
                                        <td>Timeline for Performance Improvement Plan</td>
                                        <td>
                                            <field name="timeline_improvement"/>
                                        </td>
                                        
                                    </tr>
                                    <!-- <tr>
                                        <td>Areas of Improvement</td>
                                        <td>
                                            <field name="areas_improvement_data"/>
                                        </td>
                                    </tr> -->
                                    <tr>
                                        <td>Overall Comments (If any):</td>
                                        <td>
                                            <field name="remark"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </group>
                       
                        <button name="pip_approve_btn" type="object" string="Submit" class="btn-success"/>
                        <button string="Cancel" class= "btn-danger" special="cancel" style="margin-left: 20px;"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pip_counselling_close_take_action" model="ir.ui.view">
            <field name="name">PIP Closed</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-10 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                               Are you sure, you want to Close ?
                            </p>
                        </div>
                    </div>
                    <group>
                        <field name="remark" required="1"/>
                        <field name="documents" filename="file_name" widget="FieldBinary"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                        <field name="pip_details_id" readonly="1" invisible="1"/>
                    <footer>
                        <button string="Confirm" name="pip_closed_btn"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_add_deliverables_view_form" model="ir.ui.view">
            <field name="name">Add Deliverables</field>
            <field name="model">kw_pip_remark_wizard</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <field name="feedback_ids">
                                <tree editable="bottom" nolabel= "1" create="true" edit="true" delete="true">
                                    <field name="deliverable_rec" />
                                    <field name="excepted_achivement_rec"/>
                                    
                                </tree>
                            </field>
                        </div>
                    </div>
                    <footer>
                        <button string="Confirm" name="pip_approve_btn"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
