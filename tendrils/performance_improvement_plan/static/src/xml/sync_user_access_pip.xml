<?xml version="1.0" encoding="UTF-8"?>
<templates id="user_access_sync_template" xml:space="preserve">
	<t t-name="ListView.buttons" t-extend="ListView.buttons">
		<t t-jquery='.o_list_button_discard' t-operation='after'>
			
			<t t-if="widget.modelName=='pip_user_access'">
				<button type="button" class="btn btn-primary  oe_action_sync_user_access" accesskey="t">Sync User Access</button>
			</t>
			<t t-if="widget.modelName=='pip_manager_access'">
				<button type="button" class="btn btn-primary  oe_action_sync_manager_access" accesskey="t">Sync Manager Access</button>
			</t>
			<t t-if="widget.modelName=='pip_report_access'">
				<button type="button" class="btn btn-primary  oe_action_sync_report_access" accesskey="t">Sync Report Access</button>
			</t>

			<t t-if="widget.modelName=='pip_notify_officer_access'">
				<button type="button" class="btn btn-primary  oe_action_sync_notify_access" accesskey="t">Sync Notify User Access</button>
			</t>
			<t t-if="widget.modelName=='pip_l_k_training_access'">
				<button type="button" class="btn btn-primary  oe_action_sync_lk_access" accesskey="t">Sync L&amp;K User Access</button>
			</t>
		</t>
	</t>
</templates>