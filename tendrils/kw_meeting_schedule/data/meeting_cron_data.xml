<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduler for Meeting Reminder-->
        <record forcecreate="True" id="ir_cron_scheduler_kw_meeting_reminder" model="ir.cron">
            <field name="name">Meeting Schedule: Meeting Reminder</field>
            <field name="model_id" ref="model_kw_meeting_reminder"/>
            <field name="state">code</field>
            <field name="code">model.send_reminder_mail_to_attendees()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

         <!-- Scheduler for Recurring Meetings -->
         <record forcecreate="True" id="ir_cron_scheduler_kw_recurrent_meeting_reminder" model="ir.cron">
            <field name="name">Meeting Schedule: Recurring Meeting Reminder</field>
            <field name="model_id" ref="model_kw_meeting_reminder"/>
            <field name="state">code</field>
            <field name="code">model.send_recurrent_reminder_mail_to_attendees()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>


         <!-- Scheduler for  Reminder mail for meeting task  -->
         <record forcecreate="True" id="ir_cron_scheduler_kw_meeting_task_reminder" model="ir.cron">
            <field name="name">Meeting Schedule: Meeting Task Reminder</field>
            <field name="model_id" ref="model_kw_meeting_reminder"/>
            <field name="state">code</field>
            <field name="code">model.send_reminder_mail_to_attendee_for_task()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

    </data>
</odoo>