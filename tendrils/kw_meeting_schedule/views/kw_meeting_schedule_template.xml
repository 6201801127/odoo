<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">
		<template id="kw_meeting_schedule_response_template" name="Meeting Schedule">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">
							<div class="container card">
								<div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content text-center">
												<t t-foreach="datas" t-as="data">
													<h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
														<strong><span t-field="data.event_id.name"/></strong>
														<br/>
													</h2>
													<h3>Ref: <strong><span t-field="data.event_id.meeting_code"/></strong></h3>
													<h3>
														<t t-if="data.state == 'accepted'">You have accepted the request successfully!</t>
														<t t-if="data.state == 'declined'">You have declined the request successfully!</t>
													</h3>
													<br/>
													<a class="btn btn-secondary"
													   style="background-color: #f7941d !important;"
													   t-att-href="'/web#id='+str(data.event_id.id)+'&amp;action=kw_meeting_schedule.action_window_kw_meeting_schedule&amp;model=kw_meeting_events&amp;view_type=form'">
														View Details
														&amp;nbsp;
														<i class="fa fa-arrow-circle-right "/>
													</a>
												</t>
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
			</t>
		</template>


