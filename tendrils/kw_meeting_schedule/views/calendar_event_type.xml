<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="calendar_event_type_inherited_tree_view">
            <field name="name">calendar.event.type.view.inherited tree</field>
            <field name="model">calendar.event.type</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_type_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="sequence" widget="handle"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="color" groups="base.group_no_one"/>
                    <field name="code"/>
                    <field name="prefix" groups="base.group_no_one"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="enable_tracking" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

   
        <record model="ir.actions.act_window" id="kw_meeting_schedule_event_type_window">
            <field name="name">Meeting Types</field>
            <field name="res_model">calendar.event.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('active', '=', False),('active', '!=', False)]</field>
        </record>

    </data>
</odoo>
