<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_hr_employee_recruitment_tree" model="ir.ui.view">
            <field name="name">view.hr.employee.recruitment.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
                    <field name="work_email"/>
                    <field name="mobile_phone"/>
                    <field name="epbx_no"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_recruitment_search" model="ir.ui.view">
            <field name="name">view.hr.employee.recruitment.search</field>
            <field name="model">hr.employee</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="Employees">
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
                    <field name="work_email"/>
                    <field name="mobile_phone"/>
                    <field name="epbx_no"/>
                    <field name="start_date" string="Contract Start Date"/>
                    <field name="end_date" string="Contract End Date"/>
                    <field name="last_working_day" string="Last Working Day"/>
                    <filter string="Ex Employee" name="archived" domain="[('active','=',False)]"
					       />                    <separator/>
                    <filter name="start_date" string="Contract Start Date" date="start_date"
					        groups="hr.group_hr_manager"/>
					<filter name="end_date" string="Contract End Date" date="end_date" groups="hr.group_hr_manager"/>
					<filter name="last_working_day" string="Last Working Day" date="last_working_day"
					        groups="hr.group_hr_manager"/>
                </search>
            </field>
        </record>
    </data>
</odoo>