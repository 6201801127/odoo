<?xml version="1.0"?>
<odoo>
  <data>   
    

      <!--Start: Tree view for smart button action window  -->
      <record model="ir.ui.view" id="kw_meeting_all_participants_button_view_tree">
        <field name="name">Meeting All Attendees Tree</field>
        <field name="model">kw_meeting_all_participants</field>
        <field name="arch" type="xml">
          <tree create="false" edit="false" >              
              <field name="name" />  
              <field name="email" /> 
              <field name="attendance_status" />           
              <field name="attendee_type" string="User Type"/>   
                    
          </tree>
        </field>
      </record>


      <!--Start : Meeting attendess Action Window for action window -->
        <record model="ir.actions.act_window" id="action_get_meeting_all_attendee">
            <field name="name">Meeting Attendees</field>
            <field name="res_model">kw_meeting_all_participants</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_meeting_all_participants_button_view_tree"/>
            <field name="domain">[("meeting_id", "=",active_id)]</field>
            <field name="context">{"create": False,"edit": False}</field>
        </record>
      <!--ENd : Meeting attendess Action Window  for action window  -->
   
    </data>
</odoo>