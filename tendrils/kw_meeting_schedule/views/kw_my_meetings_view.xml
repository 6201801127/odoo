<?xml version="1.0"?>
<odoo>
    <data>

     

        <!-- Action window for past partcipant meeting -->
        <record id="kw_meeting_calendar_event_dategroup_view_tree" model="ir.ui.view">
            <field name="name">kw_meeting_schedule.My Meetings.Date Group Tree</field>
            <field name="model">kw_my_meeting_dategroup_report</field>
            <field name="arch" type="xml">
                <tree string="Meetings" default_order="start asc" import="false">
                    <field name="time_over" invisible="1"/>
                    <field name="name" string="Subject"/>
                    <field name="start" string="Start Date" invisible="1"/>
                    <field name="display_time" string="Meeting Time" />
                    <field name="meeting_room_id" />
                    <!--  <field name="agenda_ids" /> -->
                    
                    <field name="duration" widget="float_time" invisible="1"/>

                    <!-- <field name="mom_required" invisible="1"/>
                    <field name="mom_controller_id" /> -->
                    <field name="user_id" string="Organiser" invisible="1"/>
                    <field name="organiser_id" string="Organiser"/>

                    
                    <field name="state" invisible="0"/>
                </tree>
            </field>
        </record>
        
        <record id="action_window_kw_my_meetings" model="ir.actions.act_window">
            <field name="name">My Past Meetings</field>
            <field name="res_model">kw_my_meeting_dategroup_report</field>
            <field name="view_mode">kanban,tree,form</field>           
            <field name="context">{"meetingparticipant": 1,"create": False,"edit": False}</field>
            <!-- <field name="domain">[('recurrency', '=', False),('start', '&lt;=',context_today().strftime('%Y-%m-%d'))]</field> -->
            <field name="domain">[('event_status', '=', 'Past')]</field>
            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_meeting_calendar_event_dategroup_view_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No meetings available.
                </p>
            </field>

        </record>

        <!-- START : ATTENDANCE -->

        <record id="view_meeting_schedule_take_action_form" model="ir.ui.view">
            <field name="name">Meeting Take Action Form</field>
            <field name="model">kw_meeting_events</field>
            <field name="arch" type="xml">
                <form string="Update Attendee">
                    <header>
                        <field name="state" invisible="1" />
                        <!-- <button class="btn btn-primary" type="object" name="action_meeting_attendance_completed" string="Update Attendance" attrs="{'invisible': [('state', 'in', ['attendance_complete','draft_mom','final_mom'])]}" /> -->
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <!--  <field name="attendance_status" />    -->
                        </div>

                        <group attrs="{'readonly':[('state','in',['attendance_complete','draft_mom','final_mom'])]}">

                            <field name="attendee_ids" attrs="{'readonly':[('state','in',['attendance_complete','draft_mom','final_mom'])]}">
                                <tree create="true" editable="top" delete="false"  >
                                    <field name="employee_id" string="Name"  required="1" attrs="{'readonly':[('is_saved_attendee','=',True)]}" options="{'no_create': True,'no_open': False,'no_create': True}"/>
                                    <field name="email" widget="email" string="E-mail" attrs="{'readonly':[('is_saved_attendee','=',True)]}"/>
                                    <field name="attendance_status" />
                                    <field name="is_saved_attendee" invisible="1"/>
                                </tree>
                            </field>
                            

                            <field name="external_attendee_ids" attrs="{'readonly':[('state','in',['attendance_complete','draft_mom','final_mom'])]}" >
                                <tree create="true" editable="top" delete="false">
                                    <field name="partner_id" string="Name"  required="1" domain="[('is_meeting_participant','=', True)]" context="{'default_is_meeting_participant':1,'default_consultancy':0, 'search_default_is_meeting_participant': 1,'default_customer': 0,'default_supplier': 0, 'default_is_company': False}" attrs="{'readonly':[('is_saved_attendee','=',True)]}"/>
                                    <field name="email" widget="email"  string="E-mail" attrs="{'readonly':[('is_saved_attendee','=',True)]}"/>
                                    <field name="attendance_status" />
                                    <field name="is_saved_attendee" invisible="1"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                    <footer>
                        <button class="btn btn-primary o_list_button_add" name="write" type="object" string="Save" attrs="{'invisible': [('state', 'in', ['attendance_complete','draft_mom','final_mom'])]}" confirm="Are you sure to submit the attendance?"/>
                        <button name="cancel" string="Close" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    <!-- START : Draft MOM  -->

