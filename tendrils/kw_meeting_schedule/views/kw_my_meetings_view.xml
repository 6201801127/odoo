        <record id="view_kw_meeting_schedule_dategroup_search" model="ir.ui.view">
            <field name="name">kw calendar.event.dategroup.search</field>
            <field name="model">kw_my_meeting_dategroup_report</field>
            <field name="arch" type="xml">
                <search string="Search Meetings">
                    <field name="name" string="Meeting" filter_domain="[('name','ilike',self)]"/>
                    <!--  <field name="partner_ids"/> -->
                    <field name="categ_ids"/>
                    <field name="user_id"/>
                    <field name="start"/>
                    <field name="stop"/>
                    <field name="meeting_category"/>
                    <field name="meeting_room_id"/>
                    <filter string="Meeting Date" name="filter_start_date" date="start"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Co-ordinator" name="responsible" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter name="group_meeting_room" string="Meeting Room" context="{'group_by':'meeting_room_id'}"/>
                        <!-- <filter name="group_meeting_category" string="Meeting Category" context="{'group_by':'meeting_category'}"/> -->
                        <filter name="group_meeting_location" string="Location" context="{'group_by':'location_id'}"/>
                        <filter name="group_meeting_start_day" string="Start Day" domain="[]" context="{'group_by':'start'}"/>
                        <filter name="group_meeting_status" string="Meeting Status" domain="[]" context="{'group_by':'event_status'}"/>
                    </group>
                </search>
            </field>
        </record>

       
        <record id="view_kw_meeting_schedule_event_dategroup_form" model="ir.ui.view">
            <field name="name">meeting_schedule.Date Group.form</field>
            <field name="model">kw_my_meeting_dategroup_report</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <form string="Meetings">
                   

                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            
                            <button class="oe_stat_button" type="action" name="%(action_get_meeting_proposals)d" icon="fa-lightbulb-o">
                                <field string="Input(s)" name="agenda_proposals"  widget="statinfo"   />
                            </button>

                             <button class="oe_stat_button" type="action" name="%(action_get_meeting_all_attendee)d" icon="fa-users" attrs="{'invisible': ['|',('mom_required', '=', False),('state', 'not in', ['attendance_complete','draft_mom','final_mom'])]}">
                                <field string="Attendees" name="total_attendee_count"  widget="statinfo"  />
                            </button>

                            <button class="oe_stat_button" type="object" name="get_meeting_mom" icon="fa-file-pdf-o" attrs="{'invisible': ['|',('mom_required', '=', False),('state', 'not in', ['final_mom'])]}">
                                <field string="MOM" name="draft_mom"  widget="statinfo" filename="file_name"  />
                            </button>

                            <button class="oe_stat_button" type="action" name="%(action_get_meeting_task)d" icon="fa-tasks"  attrs="{'invisible': ['|',('mom_required', '=', False),('state', 'not in', ['final_mom'])]}">
                                <field string="Action Items" name="mom_activity_count"  widget="statinfo"/>
                            </button>
                           
                        </div>
                        <field name="mom_required" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" placeholder="e.g. Project Review" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="display_time" string="Starting at" />
                                <label for="duration" />
                                <div >
                                    <field name="duration" widget="float_time" class="oe_inline"/>
                                    <span> hours</span>
                                </div>
                                <field name="agenda_ids">
                                    <tree >
                                        <field name="name" />
                                    </tree>
                                </field >
                                
                                <field name="employee_ids" widget="many2many_tags" string="Internal Attendees"/>
                                <field name="external_attendee_ids"  attrs="{'invisible': [('external_attendee_ids', '=', False)]}" widget="many2many_tags" string="External Attendees"/>
                            </group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="meeting_room_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="meeting_category" string="Category"/>
                                <field name="project" attrs="{'invisible': [('meeting_category', '=', 'general')]}"  string="Project"/>
                                <field name="categ_ids" widget="many2many_tags" string="Tags"/>
                                <field name="user_id"  string="Co-ordinator" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="mom_controller_id" attrs="{'invisible': [('mom_controller_id', '=', False)]}" string="MOM Controller"/>

                                <field name="description"  attrs="{'invisible': [('description', '=', False)]}"  />

                                <!-- <field name="alarm_ids" widget="many2many_tags" /> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

