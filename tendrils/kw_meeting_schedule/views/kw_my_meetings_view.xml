        <record id="view_kw_meeting_schedule_draft_mom_form" model="ir.ui.view">
            <field name="name">Meeting Draft MOM Form</field>
            <field name="model">kw_meeting_events</field>
            <field name="arch" type="xml">
                <form string="Meeting MOM">
                    <header>
                        <field name="state" widget="statusbar" />                        

                        <button class="btn btn-primary oe_read_only" type="object" name="action_draft_mom" string="Edit" attrs="{'invisible': ['|',('is_meeting_responsible', '=', False),('state','not in',['attendance_complete','draft_mom'])]}" />

                        <!-- <field name="state" invisible="1" /> -->
                        <field name="is_meeting_responsible" invisible="1" />
                        <button class="btn btn-warning" type="object" name="action_share_draft_mom" string="Preview &amp; Share Draft MOM" attrs="{'invisible': ['|',('state', 'in', ['final_mom']),('is_meeting_responsible','=',False)]}" />

                        <button name="action_generate_mom" class="btn btn-success" string="Generate Final MOM" type="object" attrs="{'invisible': ['|',('state', 'in', ['final_mom']),('is_meeting_responsible','=',False)]}" />
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <!-- <notebook>
                        <page name="activity_details" string="Meeting Activities"> -->
                        <group name="activity_details" string="Meeting Activities">
                            <field name="display_time" />
                            <field name="company_id" invisible="1" />
                            <field name="location_id" string="Location" readonly="1" />
                            <field name="meeting_room_id" string="Room" readonly="1" />

                            <field name="agenda_ids" context="{'default_meeting_id': active_id}" attrs="{'invisible':['|',('state','in',['final_mom']),('is_meeting_responsible','=',False)]}">
                                <tree create="true" delete="false">

                                    <field name="name" string="Agenda"/>
                                    <field name="is_deferred" invisible="1" />

                                    <field name="activity_ids"  />
                                    <field name="meeting_status" invisible="1" /> 
                                     <field name="no_of_activities" invisible="1" />
                                    <field name="agenda_type" invisible="1" />

                                    <button class="btn btn-danger" attrs="{'invisible': ['|','|',('meeting_status','in',['final_mom']),('agenda_type','=',1)]}" type="object" name="action_agenda_delete" string="Delete" />

                                    <button class="btn btn-primary"  context="{'default_meeting_id': active_id}" attrs="{'invisible': ['|','|',('meeting_status','in',['final_mom']),('is_deferred','=',True)]}" type="object" name="action_meeting_status" string="Add Activities" />

                                    <button class="btn btn-danger" attrs="{'invisible': ['|','|',('meeting_status','in',['final_mom']),('is_deferred','=',True),'|',('agenda_type','=',2),('no_of_activities','>',0)]}" type="object" name="action_agenda_status_deferred" string="Deferred" />


                                </tree>
                            </field>

                            <!-- <field name="agenda_ids" readonly="1" attrs="{'invisible':[('state','not in',['final_mom'])]}" >
                                <tree >
                                        <field name="name" string="Agenda"/>
                                </tree>
                            </field> -->
                        </group>

                        <group name="draft_mom" string="MOM" attrs="{'invisible': [('state','not in',['draft_mom','final_mom'])]}">
                            <field name="draft_mom_content" widget="html" string="MOM Details" attrs="{'readonly':['|',('state','in',['final_mom']),('is_meeting_responsible','=',False)]}" invisible="1" />
                        </group>
                        <group attrs="{'invisible': [('state','not in',['attendance_complete','draft_mom','final_mom'])]}">

                            <group>
                                <field name="generate_mom_doc" string="System Generated Final MOM" attrs="{'readonly':['|',('state','in',['final_mom']),('is_meeting_responsible','=',False)]}"/>

                                <field name="draft_mom" string="Upload MOM" filename="file_name" attrs="{'readonly':['|',('state','in',['final_mom']),('is_meeting_responsible','=',False)],'invisible': [('generate_mom_doc','=',True),('draft_mom','=',False)]}"  />
                                <field name="file_name" invisible="1"/>
                                <div class="file-format-note" attrs="{'invisible': [('generate_mom_doc','=',True),('draft_mom','=',False)]}">(Only .pdf format is allowed.<br/>
                                    Maximum file size is 20 MB) &#x2063;
                                </div>
                            </group>
                           <!--  <group>
                                <button class="btn btn-primary" attrs="{'invisible': [('draft_mom','!=',False)]}" type="object" name="action_meeting_mom_preview" string="Preview MOM" />
                            </group> -->
                        </group>
                        <!--   </page>                    
                       <page name="draft_mom" string="MOM">
                            <group >                            
                                <field name="draft_mom_content" widget="html" string="MOM Details"/>                                 
                            </group>
                            
                            <group >
                                <field name="draft_mom" string="Upload MOM" widget="pdf_viewer"/>
                            </group>
                        </page>
                    
                    </notebook> -->

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

