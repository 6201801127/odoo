<?xml version="1.0"?>
<odoo>
    <data>
        <record id="kw_attendee_view_form" model="ir.ui.view">
            <field name="name">Monday attendee Form</field>
            <field name="model">kw_meeting_events</field>
            <field name="arch" type="xml">
                <form string="Meeting Attendee Form" create='false'>
                    <sheet>                       
                        <group>
                            <group>
                                <field name="name" style="pointer-events:none;" />
                                <label for="kw_start_meeting_date" string="Date &amp; Time" />
                                    <div class="address_format">
                                        <field name="kw_start_meeting_date" style="width: 50%; pointer-events:none;" autocomplete="off"/>
                                        <field name="kw_start_meeting_time" style="width: 50%; pointer-events:none;"/>
                                    </div>
                                <field name="duration" required='1' style="pointer-events:none;"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Attendees" string="Attendees">
                                <field name="attendee_ids" >
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                                        <field name="attendance_status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>      
    </data>
</odoo>         