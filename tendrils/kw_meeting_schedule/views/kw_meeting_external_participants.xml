<?xml version="1.0"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="kw_meeting_external_participants_view_tree">
            <field name="name">kw_meeting_external_participants list</field>
            <field name="model">kw_meeting_external_participants</field>
            <field name="arch" type="xml">
                <tree create="true" delete="true" editable="top">
                    <field name="name" invisible="1"/>
                    <field name="partner_id" string="Name"
                           domain="[('is_meeting_participant','=',True)]"
                           context="{'default_is_meeting_participant':1,'default_consultancy':0, 'search_default_is_meeting_participant': 1,'default_customer': 0,'default_supplier': 0, 'default_is_company': False}"/>
                    <field name="designation" invisible="1"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>
        <record id="view_participant_tree" model="ir.ui.view">
            <field name="name">res.partner.consultancy.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="display_name" string="Name"/>
                    <field name="function" invisible="1"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
		<record id="action_announcement_contact" model="ir.actions.act_window">
		    <field name="name">External Participant</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">res.partner</field>
		    <field name="view_mode">tree,form</field>
	        <field name="domain">[('is_meeting_participant','=',1)]</field>
	        <field name="context">{'default_is_meeting_participant':1,'default_consultancy':0, 'search_default_is_meeting_participant': 1,'default_customer': 0,'default_supplier': 0, 'default_is_company': True}</field>
			<field name="view_ids" eval="[(5, 0, 0),
	            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_participant_tree')}),
	            (0, 0, {'view_mode': 'form', 'view_id': ref('view_participant_form')}),
	            ]"/>
             <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create new Paticipants.
                </p>
            </field>
		</record>
		<menuitem name="Contact" parent="kw_meeting_master_menu" id="menu_announcement_contact"
			          action="action_announcement_contact"/>


    </data>
</odoo>
