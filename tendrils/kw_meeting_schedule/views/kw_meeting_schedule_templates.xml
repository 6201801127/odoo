<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <!-- Template rendered in route auth=None, for anonymous user. This allow them to see meeting details -->
    <template id="invitation_page_anonymous" name="Calendar Invitation Page for anonymous users">
        <t t-call="web.layout">
            <t t-set="head">
                <t t-call-assets="web.assets_common" t-js="false"/>
                <t t-call-assets="web.assets_frontend" t-js="false"/>
            </t>

            <div class="container">
                <div class="o_logo">
                    <img class="img img-fluid d-block mx-auto" src="/web/binary/company_logo" alt="Logo"/>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2>Calendar Invitation <small><t t-esc="event.name"/></small></h2>
                    </div>
                    <div class="card-body">
                        <div class="clearfix mb16" t-if="attendee.state != 'needsAction'">
                            <span class="float-right badge badge-info">
                                <t t-if="attendee.state == 'accepted'">Yes I'm going.</t>
                                <t t-if="attendee.state == 'declined'">No I'm not going.</t>
                            </span>
                        </div>

                        <div class="table-responsive">
                            <table class="o_event_table table table-striped">
                                <tr>
                                    <th>Invitation for</th>
                                    <td><t t-esc="attendee.common_name"/> (<t t-esc="attendee.email"/>)</td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td><t t-esc="event.display_time"/></td>
                                </tr>
                                <tr>
                                    <th>Venue</th>
                                    <td><t t-esc="event.meeting_room_id.name or '-'"/></td>
                                </tr>
                                <tr>
                                    <th>Location</th>
                                    <td><t t-esc="event.location_id.name or '-'"/></td>
                                </tr>
                                <tr>
                                    <th>Agenda</th>
                                    <td>
                                        <ul>
                                            <li t-foreach="event.agenda_ids" t-as="agenda" >
                                                <t t-esc="agenda.name"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Required Information</th>
                                    <td><t t-esc="event.description or '-'"/></td>
                                </tr>

                                <tr t-if="event.recurrency">
                                    <th>Meeting Type: Recurrent, <t t-esc="event.rrule"/>  </th>
                                    <td>
                                        <ul>
                                            <li t-foreach="event.child_ids" t-as="recurring_event" >
                                                <t t-esc="recurring_event.display_time"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>                              
                               
                               <tr t-if="event.mom_required">
                                    <th>MOM Controller</th>
                                    <td><t t-esc="event.mom_controller_id.name or '-'"/></td>
                                </tr>
                                <tr>
                                    <th>Attendees</th>
                                    <td>
                                        <ul>
                                            <li t-foreach="event.attendee_ids" t-as="attendee" t-attf-class="o_#{attendee.state}">
                                                <t t-esc="attendee.common_name"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                                
                                <tr t-if="event.external_attendee_ids" >
                                    <th>External Participants</th>
                                    <td>
                                        <ul>
                                            <li t-foreach="event.external_attendee_ids" t-as="ext_attendee" >
                                                <t t-esc="ext_attendee.partner_id.name"/> <t t-esc="ext_attendee.partner_id.mobile_no"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>

                             
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
