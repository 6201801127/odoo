<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_meeting_room_master_view_tree">
            <field name="name">Meeting Room List</field>
            <field name="model">kw_meeting_room_master</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                    <field name="floor_name"/>
                    <field name="extn_no" />
                    <field name="location_id" />
                    <field name="capacity" />
                    <field name="max_allocation" />
                    
                    <field name="amenity_ids" widget="many2many_tags"/>
                    <field name="visibility_status" invisible="1" widget="boolean_toggle"/>
                    <field name="restricted_access" widget="boolean_toggle" groups="kw_meeting_schedule.group_kw_meeting_schedule_manager"/>
                    <field name="active" widget="boolean_toggle" groups="kw_meeting_schedule.group_kw_meeting_schedule_manager"/>
                </tree>
            </field>
        </record>

        <record id="kw_meeting_room_master_view_form" model="ir.ui.view">
            <field name="name">Meeting Room Form</field>
            <field name="model">kw_meeting_room_master</field>
            <field name="arch" type="xml">
                <form string="Add Meeting Rooms">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="restricted_access" invisible="1"/>
                            <button name="toggle_access" type="object"
                            class="oe_stat_button text-success" icon="fa-universal-access text-success" attrs="{'invisible': [('restricted_access', '=', False)]}">
                                <span class="o_stat_text font-weight-bold">
                                    Restricted Access ON
                                </span>
                            </button>
                            <button name="toggle_access" type="object"
                            class="oe_stat_button text-danger" icon="fa-ban text-danger" attrs="{'invisible': [('restricted_access', '=', True)]}">
                                <span class="o_stat_text font-weight-bold">
                                    Restricted Access OFF
                                </span>
                            </button>
                            <field name="active" invisible="1"/>
                            <button name="toggle_active" type="object"
                            class="oe_stat_button text-success" icon="fa-archive" attrs="{'invisible': [('active', '=', False)]}">
                                <span class="o_stat_text font-weight-bold">
                                    Active
                                </span>
                            </button>
                            <button name="toggle_active" type="object"
                            class="oe_stat_button text-danger" icon="fa-archive" attrs="{'invisible': [('active', '=', True)]}">
                                <span class="o_stat_text font-weight-bold">
                                    InActive
                                </span>
                            </button>
                        </div>                       
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="name" />
                                <field name="floor_name" />
                                <field name="block_name" />
                                <field name="extn_no" />
                                <field name="capacity" />
                                <field name="department_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="max_allocation" /> 
                                <field name="visibility_status" invisible="1"/>
                                <field name="amenity_ids" options="{'no_create':True,'no_open': True,'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view -->
        <record id="meeting_room_search_view" model="ir.ui.view">
			<field name="name">meeting_room_search_view</field>
			<field name="model">kw_meeting_room_master</field>
			<field name="arch" type="xml">
				<search string="Meeting room">
                    <field name="name"/>
					<field name="location_id"/>
					<field name="floor_name"/>
					<group expand="0" string="Group By">
						<filter name="groupby_location" string="Office Location" domain="[]" context="{'group_by':'location_id'}"
						        help="Group location Wise"/>
					</group>
				</search>
			</field>
		</record>

        <record model="ir.actions.act_window" id="kw_meeting_room_master_action_window">
            <field name="name">Meeting Room</field>
            <field name="res_model">kw_meeting_room_master</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('active', '=', False),('active', '!=', False)]</field>
        </record>

    </data>
</odoo>
