<?xml version="1.0"?>
<odoo>
  <data>


        <!--Start : Meetings Hour Expense Report Action Window-->

        <record id="pivot_view_kw_meeting_schedule_participants_statistics_report" model="ir.ui.view">
            <field name="name">Meetings Participants Statistics Pivot View</field>
            <field name="model">kw_meeting_monthwise_attendee_report</field>
            <field name="arch" type="xml">
                <pivot string="Meetings Participants Statistics"> 
                    <field name="start" interval="month" type="row"/>
                    <field name="user_type" type="col"/>                    
                   <!--  <field name="project" type="col"/>  -->
                </pivot>
            </field>
        </record>


        <record id="search_view_kw_meeting_monthwise_attendee_report" model="ir.ui.view">
            <field name="name">Meetings Participants Search View</field>
            <field name="model">kw_meeting_monthwise_attendee_report</field>
            <field name="arch" type="xml">
                <search string="Search Meetings">
                    <field name="name" string="Meeting" filter_domain="[('name','ilike',self)]"/>                  
                    <field name="meeting_year"/>
                    <field name="start"/>                   
                  
                    <filter string="Meeting Date" name="filter_start_date" date="start"/> 
                    <filter string="This Year" name="filter_meeting_year" domain="[('meeting_year', '=',context_today().strftime('%Y'))]"  />                  
                    <separator/>                  
                </search>
            </field>
        </record>
       
        <record model="ir.actions.act_window" id="action_window_kw_meeting_schedule_participant_statistices_report">
            <field name="name">Meetings Participants Statistics</field>            
            <field name="res_model">kw_meeting_monthwise_attendee_report</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[]</field>
            <field name="context">{"search_default_filter_meeting_year":1,"create": False,"edit": False}</field>
            <field name="view_id" ref="pivot_view_kw_meeting_schedule_participants_statistics_report"/>
            <field name="search_view_id" ref="search_view_kw_meeting_monthwise_attendee_report"/>
        </record>





    
     </data>
</odoo>

        