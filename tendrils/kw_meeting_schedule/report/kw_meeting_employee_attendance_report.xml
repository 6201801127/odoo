<?xml version="1.0"?>
<odoo>
  <data>


        <!--Start : Meetings Hour Expense Report Action Window-->

       
        <record id="pivot_view_kw_meeting_schedule_employee_statistics_report" model="ir.ui.view">
            <field name="name">Meetings Participants Statistics Pivot View</field>
            <field name="model">kw_meeting_attendance_report</field>
            <field name="arch" type="xml">
                <pivot string="Employee Statistics"> 
                    <field name="employee_id"  type="row"/>
                    <field name="meeting_id" type="measure" string="Meeting Tagged"/>  
                    <field name="duration" type="measure" string="Hour Spent"/>  
                    <field name="attendance_status" type="measure" string="Meetings Attended"/>  
                   <!--  <field name="meeting_id" type="measure"/>   -->
                   <!--  <field name="project" type="col"/>  -->
                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_window_kw_meeting_schedule_employee_statistices_report">
            <field name="name">Meetings Participants Statistics</field>            
            <field name="res_model">kw_meeting_attendance_report</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[]</field>
            <field name="context">{"create": False,"edit": False}</field>
            <field name="view_id" ref="pivot_view_kw_meeting_schedule_employee_statistics_report"/>
        </record>


    
     </data>
</odoo>

        