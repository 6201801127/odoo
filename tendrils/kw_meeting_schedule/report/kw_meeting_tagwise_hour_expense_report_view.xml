<?xml version="1.0"?>
<odoo>
  <data>


        <!--Start : Meetings Hour Expense Report Action Window-->

        <record id="pivot_view_kw_meeting_schedule_tagwise_meetinghour" model="ir.ui.view">
            <field name="name">Meetings Hour Expense Pivot View</field>
            <field name="model">kw_meeting_tagwise_hour_expense_report</field>
            <field name="arch" type="xml">
                <pivot string="Meetings Hour Expense">                
                    <field name="meeting_tag" type="row"/> 
                    <field name="start" interval="month" type="col"/>
                    <field name="duration" type="measure" widget="float_time"/>
                </pivot>
            </field>
        </record>

         <record id="search_view_kw_meeting_schedule_tagwise_meetinghour" model="ir.ui.view">
            <field name="name">Meetings Hour Expense Search View</field>
            <field name="model">kw_meeting_tagwise_hour_expense_report</field>
            <field name="arch" type="xml">
                <search string="Search Meetings">
                    <field name="name" string="Meeting" filter_domain="[('name','ilike',self)]"/>                  
                    <field name="meeting_year"/>
                    <field name="start"/>                   
                    <field name="meeting_tag"/>
                    <filter string="Meeting Date" name="filter_start_date" date="start"/>    
                    <filter string="This Year" name="filter_meeting_year" domain="[('meeting_year', '=',context_today().strftime('%Y'))]"  />                
                    <separator/>                  
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="kw_meeting_schedule_tagwise_meetinghour_window">
            <field name="name">Man Hour Time Spent</field>
            <field name="res_model">kw_meeting_tagwise_hour_expense_report</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[]</field>
            <field name="context">{"search_default_filter_meeting_year":1,"create": False,"edit": False}</field>
            <field name="view_id" ref="pivot_view_kw_meeting_schedule_tagwise_meetinghour"/> 
            <field name="search_view_id" ref="search_view_kw_meeting_schedule_tagwise_meetinghour"/>
        </record>

     </data>
</odoo>

        