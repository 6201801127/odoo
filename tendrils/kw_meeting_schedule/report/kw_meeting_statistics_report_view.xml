<?xml version="1.0"?>
<odoo>
  <data>


        <!--Start : Meetings Hour Expense Report Action Window-->

        <record id="pivot_view_kw_meeting_schedule_resource_statistics_report" model="ir.ui.view">
            <field name="name">Meetings Category Statistics Pivot View</field>
            <field name="model">kw_meeting_events</field>
            <field name="arch" type="xml">
                <pivot string="Meetings Resource Statistics"> 
                    <field name="start" interval="month" type="row"/>
                    <field name="meeting_category" type="col"/> 
                   <!--  <field name="project" type="col"/>  -->
                </pivot>
            </field>
        </record>

        <record id="pivot_view_kw_meeting_schedule_mom_statistics_report" model="ir.ui.view">
            <field name="name">Meetings MOM Statistics Pivot View</field>
            <field name="model">kw_meeting_events</field>
            <field name="arch" type="xml">
                <pivot string="Meetings MOM Statistics"> 
                    <field name="start" interval="month" type="row"/>
                    <field name="mom_required" type="col" /> 
                    <field name="mom_info_count" string="Information" type="measure" /> 
                    <field name="mom_activity_count" string="Activities" type="measure" /> 
                </pivot>
            </field>
        </record>


         <record id="search_view_kw_meeting_schedule_report" model="ir.ui.view">
            <field name="name">Meetings Report Search View</field>
            <field name="model">kw_meeting_events</field>
            <field name="arch" type="xml">
                <search string="Search Meetings">
                    <field name="name" string="Meeting" filter_domain="[('name','ilike',self)]"/> 
                    <field name="start"/> 
                    <filter string="Meeting Date" name="filter_start_date" date="start"/>  
                    <filter string="This Year" name="filter_this_year" domain="[('start', 'like',context_today().strftime('%Y-%-%'))]" />              
                    <separator/>                  
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_window_kw_meeting_schedule_resource_statistices_report">
            <field name="name">Meetings Category Statistics</field>            
            <field name="res_model">kw_meeting_events</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('recurrency', '=', False),('state', '!=', 'cancelled')]</field>
            <field name="context">{"search_default_filter_this_year":1,"create": False,"edit": False}</field>
            <field name="view_id" ref="pivot_view_kw_meeting_schedule_resource_statistics_report"/>
            <field name="search_view_id" ref="search_view_kw_meeting_schedule_report"/>
        </record>


        <record model="ir.actions.act_window" id="action_window_kw_meeting_schedule_mom_statistices_report">
            <field name="name">Meetings MOM Statistics</field>            
            <field name="res_model">kw_meeting_events</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('recurrency', '=', False),('state', '!=', 'cancelled'),('mom_required', '=',True)]</field>
            <field name="context">{"search_default_filter_this_year":1,"create": False,"edit": False}</field>
            <field name="view_id" ref="pivot_view_kw_meeting_schedule_mom_statistics_report"/>
            <field name="search_view_id" ref="search_view_kw_meeting_schedule_report"/>
        </record>

        

        <record id="pivot_view_kw_meeting_schedule_employee_activity_statistics_report" model="ir.ui.view">
            <field name="name">Employee Activity Statistics Pivot View</field>
            <field name="model">kw_meeting_agenda_activities</field>
            <field name="arch" type="xml">
                <pivot string="Employee Activity Statistics"> 
                    <field name="assigned_to" type="row"/>
                    <field name="state" type="col" /> 
                    <!-- <field name="state" string="Information" type="measure" /> 
                    <field name="mom_activity_count" string="Activities" type="measure" />  -->
                </pivot>
            </field>
        </record>

         <record model="ir.actions.act_window" id="action_window_kw_meeting_schedule_employee_activity_statistices_report">
            <field name="name">Employee Activity Statistics</field>            
            <field name="res_model">kw_meeting_agenda_activities</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('activity_type','=','activity')]</field>
            <field name="context">{"create": False,"edit": False}</field>
            <field name="view_id" ref="pivot_view_kw_meeting_schedule_employee_activity_statistics_report"/>
        </record>

    
     </data>
</odoo>

        