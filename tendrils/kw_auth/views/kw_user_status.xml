                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="fa fa-pencil fa-6x mb-4 attention"/>
                                    <t t-if="LateReasonPopUpOutput">
                                        <p class="h5 text-muted">You need to fill late entry reason.</p>
                                        <a t-att-href="LateReasonPopUpOutput">
                                            <button type="button" class="btn btn-primary">Give Your Late Entry Reason</button>
                                        </a>
                                        <hr/>
                                    </t>
                                    <t t-if="CompoffOutput">
                                        <p class="h5 text-muted">You need to fill comp-off details.</p>
                                        <a t-att-href="CompoffOutput">
                                            <button type="button" class="btn btn-primary">Give Your Comp-OFF Reason</button>
                                        </a>
                                        <hr/>
                                    </t>
                                    <t t-if="WhatsappPopupOutput">
                                        <p class="h5 text-muted">You need to fill your WhatsApp Number.</p>
                                        <a t-att-href="WhatsappPopupOutput">
                                            <button type="button" class="btn btn-primary">Give Your WhatsApp Number</button>
                                        </a>
                                        <hr/>
                                    </t>
                                    <t t-if="EPFPopupOutput">
                                        <p class="h5 text-muted">You have to fill your details for Employee Provident fund.</p>
                                        <a t-att-href="EPFPopupOutput">
                                            <button type="button" class="btn btn-primary">Fill Employee Nominee Form</button>
                                        </a>
                                    </t>
                                    <t t-if="AttenSyncOutput">
                                        <p class="h5 text-muted">Your biometric attendance has not been recorded.</p>
                                    </t>
                                    <t t-if="training_feedback_url">
                                        <p class="h5 text-muted">You need to fill training feedback form.</p>
                                        <a t-att-href="training_feedback_url">
                                            <button type="button" class="btn btn-primary">Fill Training Feedback form</button>
                                        </a>
                                    </t>
                                    <t t-if="timesheet_redirect_url">
                                        <p class="h5 text-muted">You need to fill your timesheet for <t t-esc="timesheet_date"/></p>
                                        <a t-att-href="timesheet_redirect_url">
                                            <button type="button" class="btn btn-primary">Fill Timesheet</button>
                                        </a>
                                        <hr/>
                                    </t>

                                    <t t-if="bank_redirect_url">
                                        <p class="h5 text-muted">Please fill up your bank salary account details</p>
                                        <a t-att-href="bank_redirect_url">
                                            <button type="button" class="btn btn-primary">Bank Account Details</button>
                                        </a>
                                        <hr/>
                                    </t>
                                    <t t-if="nps_redirect_url">
                                        <!-- <t t-esc="nps_redirect_url"/> -->
                                        <p class="h5 text-muted">Please fill up your NPS Details</p>
                                        <a t-att-href="nps_redirect_url">
                                            <button type="button" class="btn btn-primary">NPS Details</button>
                                        </a>
                                        <hr/>
                                    </t>
                                    <t t-if="emp_induction_url">
                                        <p class="h5 text-muted">Please give the induction assessment</p>
                                        <a class="btn btn-primary" 
                                            t-attf-href="/web#action=kw_onboarding_induction_feedback.action_kw_induction_assessment_user_readonly_act_window&amp;model=kw_employee_induction_assessment&amp;view_type=kanban"> 
                                            Go to My Induction Assessment 
                                        </a>
                                        <hr/>
                                    </t>

                                    <t t-if="interview_feedback_url">
                                        <p class="h5 text-muted">You need to give Interview feedback for <t t-esc="interview_name"/></p>
                                        <a t-att-href="interview_feedback_url">
                                            <button type="button" class="btn btn-primary">Give Feedback</button>
                                        </a>
                                        <hr/>
                                    </t>

                                    <t t-if="ra_pm_reviewer_url">
                                        <p class="h5 text-muted">Your project team/subordinates timesheet(s) need to validate for
                                            <!-- <b><t t-esc="ra_pm_reviewer_validate_count"/></b> resources for  -->
                                            <t t-esc="ra_pm_date"/>
                                        </p>
                                        <a t-att-href="ra_pm_reviewer_url">
                                            <button type="button" class="btn btn-primary">Validate Timesheet(s)</button>
                                        </a>
                                        <hr/>
                                    </t>
                                    <t t-if="work_from_home_survey_url">
                                        <t t-if="'ignite' == survey_type_codes">
                                            <p class="h5 text-muted">Welcome to another round of IGNITE Quizzes. Good luck and let’s get started.</p>
                                            <a t-att-href="work_from_home_survey_url">
                                                <button type="button" class="btn btn-primary text-uppercase" style="font-size: 18px">Click here to start the Quiz</button>
                                            </a>
                                        </t>
                                        <t t-else="">
                                            <!-- <p class="h5 text-muted"> We would like to know how you have been working in these Covid-19 times.</p> <p class="h5 text-muted"> How is your infrastructure supporting you? </p> <p class="h5 text-muted"> Are you being productive in your home-office-space? </p> <p class="h5 text-muted"> Tell us all! </p> -->
                                            <!-- <p class="h5 text-muted text-primary"> Take this short Job Rotation Survey to help us understand your working conditions better. </p> -->
                                            <p class="h5 text-muted text-primary">
                                                <t t-esc="survey_name"/>
                                            </p>
                                            <a t-att-href="work_from_home_survey_url">
                                                <button type="button" class="btn btn-primary text-uppercase" style="font-size: 18px">Click here to take the Survey</button>
                                            </a>
                                        </t>
                                        <div class="clearfix mb-4"/>
                                        <t t-if="not LateReasonPopUpOutput and  not EPFPopupOutput and  not work_from_home_survey_url">
                                            <a class="btn btn-outline-primary signinButton" t-attf-href="/web" t-if="not user_id._is_public() and not my_ofc_redirect">
                                                Skip
                                                <i class="icon-right-arrow"/>
                                            </a>
                                            <a class="btn btn-outline-primary signinButton" t-attf-href="/redirect_to_my_office_time" t-if="my_ofc_redirect">
                                                Skip
                                                <i class="icon-right-arrow"/>
                                            </a>
                                        </t>
                                    </t>
                                </div>
                            </div>
                            <!-- </t> -->
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>