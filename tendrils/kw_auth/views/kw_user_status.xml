                                <t t-esc="err_msg"/>
                                <button type="button" class="close" data-dismiss="alert">
                                    <i class="fa fa-times fa-times-circle-o"/>
                                </button>
                            </t>
                        </div>
                    </div>

                    <div class="row" t-if="not link_err_msg">
