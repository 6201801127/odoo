<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_login_activity_tree" model="ir.ui.view">
            <field name="name">login_activity_config_tree</field>
            <field name="model">login_activity_configuration</field>
            <field name="arch" type="xml">
                <tree create='true' edit='true' delete='true' import='false' editable="bottom">
                    <field name="view_name_id" required="1"/>
                    <field name="view_name_code" required="1"/>
                    <field name="multi_company_ids" required="1" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>


        <record id="kw_login_activity_action" model="ir.actions.act_window">
            <field name="name">After Login Activity</field>
            <field name="res_model">login_activity_configuration</field>
            <field name="view_id" ref="view_login_activity_tree"/>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="login_activity_menu"
                  name="Login activity Configuration"
                  sequence="33"
                  action="kw_login_activity_action"
                  parent="disable_debug_mode.menu_technical_developer"
                  groups="disable_debug_mode.group_developer"
                 />
    </data>
</odoo>