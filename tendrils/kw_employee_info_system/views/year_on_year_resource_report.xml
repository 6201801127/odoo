<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="kw_MIS_report_list_tree" model="ir.ui.view">
			<field name="name">Year on Year Resources List</field>
			<field name="model">mis_report_employees_joined_and_resigned</field>
			<field name="arch" type="xml">
				<tree>
					<field name="year"/>
					<field name="month"/>

					<field name="fte_opening" class="fte_opening"/>
					<field name="ret_opening" class="ret_opening"/>
					<field name="ce_opening" class="ce_opening"/>

					<field name="fte_totalonboard" class="fte_totalonboard"/>
					<field name="ret_totalonboard" class="ret_totalonboard"/>
					<field name="ce_totalonboard" class="ce_totalonboard"/>

					<field name="fte_totaloffboard" class="fte_totaloffboard"/>
					<field name="ret_totaloffboard" class="ret_totaloffboard"/>
					<field name="ce_totaloffboard" class="ce_totaloffboard"/>

					<field name="fte_closing" class="fte_closing"/>
					<field name="ret_closing" class="ret_closing"/>
					<field name="ce_closing" class="ce_closing"/>
					<field name="grand_total" class="grand_total"/>
				</tree>
			</field>
		</record>


		<record id="kw_MIS_report_employee_list_action" model="ir.actions.act_window">
			<field name="name">Year on Year Resources</field>
			<field name="res_model">mis_report_employees_joined_and_resigned</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No records found...
				</p>
			</field>
		</record>
		<menuitem id="mis_report_employee_menu"
				  name="Year on Year Resources"
				  action="kw_mis_emp_wizard_view_action"
				  parent="kw_employee_info_system.employee_mis_report_menu"
				  groups="hr.group_hr_manager,kw_employee.group_hr_management"
		/>


	
		<record id="kw_mis_emp_reports_wizard_view_form" model="ir.ui.view">
			<field name="name">kw_MIS_emp_reports_wizard_form</field>
			<field name="model">kw_mis_employee_reports_wizard</field>
			<field name="arch" type="xml">
				<form string="">
					<sheet>
						<group>
							<field name="fiscalyr" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
						</group>
					</sheet>
					<footer>
						<button name="get_year_to_year_employee_report" class="btn-success" string="Get Report" type="object"/>
					</footer>
				</form>
			</field>
		</record>
		<record id="kw_mis_emp_wizard_view_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Year on Year Resources</field>
			<field name="res_model">kw_mis_employee_reports_wizard</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>
	
	</data>
</odoo>