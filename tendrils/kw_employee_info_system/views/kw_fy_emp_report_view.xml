<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="kw_fy_emp_resources_tree_view" model="ir.ui.view">
        <field name="name">Financial Year Employee Resources Report</field>
        <field name="model">kw_fy_emp_reports</field>
        <field name="arch" type="xml">
            <tree create='false' delete='false' import='false'>
                <field name="fiscal_year"/>
                <!-- <field name="id" /> -->
                <field name="months"/>
                <field name="total_fte"/>
                <field name="total_rte"/>
                <field name="total_con"/>
                <field name="join_fte"/>
                <field name="join_rte"/>
                <field name="join_con"/>
                <field name="exit_fte"/>
                <field name="exit_rte"/>
                <field name="exit_con"/>
            </tree>
        </field>
    </record>
    <record id="kw_fy_emp_reports_wizard_view_form" model="ir.ui.view">
        <field name="name">kw_fy_emp_reports_wizard.view.form</field>
        <field name="model">kw_fy_emp_reports_wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="fiscal_year"/>
                    </group>
                </sheet>
                <footer>
                    <button name="get_fy_resource_report" type="object" string="Get Report" class="btn-success"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="kw_fy_emp_resources_view_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Financial Year Employee Resources Report</field>
        <field name="res_model">kw_fy_emp_reports</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>
    <record id="kw_fy_emp_resources_wizard_view_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Financial Year Employee Wizard Resources Report</field>
        <field name="res_model">kw_fy_emp_reports_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="kwantify_fy_emp_resources_report_menu"
              name='Employee Resources Report'
              parent="kw_employee_info_system.employee_mis_report_menu"
              action="kw_fy_emp_resources_wizard_view_action"
              groups="base.group_no_one"/>

</odoo>
