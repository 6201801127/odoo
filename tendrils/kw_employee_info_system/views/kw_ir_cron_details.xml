<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   
    <record id="kw_cron_details_view_tree" model="ir.ui.view">
        <field name="name">kw_cron_details.view.tree</field>
        <field name="model">kw_cron_details</field>
        <field name="arch" type="xml">
            <tree create='false' import='false'>
                <field name="name"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="write_uid"/>
            </tree>
        </field>
    </record>

    <!-- kw_cron_details search view -->
    <record id="kw_cron_details_view_search" model="ir.ui.view">
        <field name="name">kw_cron_details.view.search</field>
        <field name="model">kw_cron_details</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name" string='Name'/>
                <!-- <field name="start_time" string='Start time'/> -->
                <!-- <field name="end_time" string='End Time'/> -->
            </search>
        </field>
    </record>

    <record id="kw_cron_details_action" model="ir.actions.act_window">
		<field name="type">ir.actions.act_window</field>
		<field name="name">Cron Details Report</field>
		<field name="res_model">kw_cron_details</field>
		<field name="view_mode">tree</field>
        <field name="domain">[]</field>
		<field name="view_type">form</field>
        <field name="view_id" ref="kw_cron_details_view_tree"/>
	</record>

    	<menuitem id="kwantify_cron_details_menu"
            name='Scheduler Log Report'
            parent="kw_kwantify_integration.kw_integration_parent_menu"
            action="kw_cron_details_action" 
            sequence="2"  
            />
</odoo>
