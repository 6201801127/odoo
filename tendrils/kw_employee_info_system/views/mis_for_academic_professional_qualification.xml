<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="mis_for_academic_professional_qualification_tree" model="ir.ui.view">
            <field name="name">MIS report for Academic Professional Employee</field>
            <field name="model">hr.mis.academic.and.professional.qualification</field>
            <field name="arch" type="xml">
                <tree import="0">
                    <field name="emp_id" invisible="1"/>
                    <field name="name" class="font-weight-bold"/>
                    <field name="emp_code"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="job_branch_id"/>
                    <field name="gender"/>

                    <field name="previous_company_experience"/>
                    <field name="csm_experience"/>
                    <field name="total_experience"/>

                    <field name="gr_stream" class="bg-400"/>
                    <field name="gr_specialization" class="bg-400"/>
                    <field name="gr_year" class="bg-400"/>

                    <field name="pg_stream"/>
                    <field name="pg_specialization"/>
                    <field name="pg_year"/>

                    <field name="prof_stream_1" class="bg-400"/>
                    <field name="prof_specialization_1" class="bg-400"/>
                    <field name="prof_year_1" class="bg-400"/>

                    <field name="prof_stream_2"/>
                    <field name="prof_specialization_2"/>
                    <field name="prof_year_2"/>

                    <field name="prof_stream_3" class="bg-400"/>
                    <field name="prof_specialization_3" class="bg-400"/>
                    <field name="prof_year_3" class="bg-400"/>

                    <field name="prof_stream_4"/>
                    <field name="prof_specialization_4"/>
                    <field name="prof_year_4"/>

                    <field name="cert_1_stream" class="bg-400"/>
                    <field name="cert_1_vendor_id" class="bg-400"/>
                    <field name="cert_1_year" class="bg-400"/>

                    <field name="cert_2_stream"/>
                    <field name="cert_2_vendor_id"/>
                    <field name="cert_2_year"/>

                    <field name="cert_3_stream" class="bg-400"/>
                    <field name="cert_3_vendor_id" class="bg-400"/>
                    <field name="cert_3_year" class="bg-400"/>

                    <field name="cert_4_stream"/>
                    <field name="cert_4_vendor_id"/>
                    <field name="cert_4_year"/>

                    <field name="cert_5_stream" class="bg-400"/>
                    <field name="cert_5_vendor_id" class="bg-400"/>
                    <field name="cert_5_year" class="bg-400"/>
                </tree>
            </field>
        </record>

        <record id="mis_for_academic_professional_qualification_search" model="ir.ui.view">
            <field name="name">MIS report for Academic Professional Search</field>
            <field name="model">hr.mis.academic.and.professional.qualification</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="gr_stream" string="Graduation"
                           filter_domain="['|','|','|',('gr_stream','ilike',self),('name','ilike',self),('pg_year','ilike',self),('gr_specialization','ilike',self)]"/>
                    <field name="pg_stream" string="Post Graduation"
                           filter_domain="['|','|','|',('pg_stream','ilike',self),('name','ilike',self),('pg_specialization','ilike',self),('pg_year','ilike',self)]"/>
                    <field name="cert_1_stream" string="Certificate Stream"
                           filter_domain="['|','|','|','|','|',('cert_1_stream','ilike',self),('name','ilike',self),('cert_2_stream','ilike',self),('cert_3_stream','ilike',self),('cert_4_stream','ilike',self),('cert_5_stream','ilike',self)]"/>
                    <field name="cert_1_vendor_id" string="Certificate Vendor"
                           filter_domain="['|','|','|','|','|',('cert_1_vendor_id','ilike',self),('name','ilike',self),('cert_2_vendor_id','ilike',self),('cert_3_vendor_id','ilike',self),('cert_4_vendor_id','ilike',self),('cert_5_vendor_id','ilike',self)]"/>
                    <field name="cert_1_year" string="Certificate Year"
                           filter_domain="['|','|','|','|','|',('cert_1_year','ilike',self),('name','ilike',self),('cert_2_year','ilike',self),('cert_3_year','ilike',self),('cert_4_year','ilike',self),('cert_5_year','ilike',self)]"/>
                </search>
            </field>
        </record>

        <record id="mis_for_academic_professional_qualification_action" model="ir.actions.act_window">
            <field name="name">MIS report for Academic &amp; Professional Qualification</field>
            <field name="res_model">hr.mis.academic.and.professional.qualification</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="mis_academic_report_employee_menu"
                  name="Academic &amp; Prof. Qualification"
                  action="mis_for_academic_professional_qualification_action"
                  parent="kw_employee_info_system.employee_mis_report_menu"/>
    </data>
</odoo>