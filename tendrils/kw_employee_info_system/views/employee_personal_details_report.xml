<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="employee_details_view" model="ir.ui.view">
            <field name="name">employee_personal_details_report_tree</field>
            <field name="model">employee_personal_details</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="emp_code"/>
                    <field name="emp_name" class="font-weight-bold"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="birthday"/>
                    <field name="date_of_joining"/>
                    <field name="mobile_phone"/>
                    <field name="gender"/>
                    <field name="marital_sts"/>
                    <field name="adhara_number"/>
                    <field name="salary_account"/>
                    <field name="ifsc_code"/>
                    <field name="father_name"/>
                    <field name="father_dob"/>
                    <field name="mother_name"/>
                    <field name="mother_dob"/>
                    <field name="enable_epf"/>
                    <field name="esi_applicable"/>
                </tree>
            </field>
        </record>

        <record id="employee_details_search_view" model="ir.ui.view">
            <field name="name">employee_personal_details_report_tree</field>
            <field name="model">employee_personal_details</field>
            <field name="priority">200</field>
            <field name="arch" type="xml">
                <search string="Search Employee">
                    <field name="emp_name"/>
                    <field name="emp_code"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="birthday"/>
                    <field name="marital_sts"/>
                    <field name="father_name"/>
                    <field name="mother_name"/>
                    <field name="enable_epf"/>
                    <field name="esi_applicable"/>
                    <field name="date_of_joining"/>
                </search>
            </field>
        </record>


        <record id="employee_personal_details_action" model="ir.actions.act_window">
            <field name="name">Employee Personal Details Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee_personal_details</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Employee Details Report"
                  id="employee_details_report_menu"
                  action="employee_personal_details_action"
                  parent="kw_onboarding.postonboarding_parent_menu"
                  sequence="99"
        />

    </data>
</odoo>
    
