<odoo>
    <data>
        <record id="kw_mis_resource_list_tree" model="ir.ui.view">
            <field name="name">Resource Report</field>
            <field name="model">mis_resources_report</field>
            <!-- <field name="priority" eval="60"/> -->
            <field name="arch" type="xml">
                <tree editable="bottom" import="false">
                    <field name="fiscalyear_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="month"/>
                    <field name="resource_type"/>
                    <field name="head_count" sum="total" class="text-center"/>
                </tree>
            </field>

        </record>

        <record id="mis_resource_report_view_search" model="ir.ui.view">
            <field name="name">resource_report.view.search</field>
            <field name="model">mis_resources_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="month"/>
                    <field name="fiscalyear_id"/>
                    <filter name="fiscalyr_filter" string="Current Fiscal Year" 
                            domain="['&amp;',('fiscalyear_id.date_start', '&lt;=',context_today().strftime('%Y-%m-%d')),('fiscalyear_id.date_stop', '&gt;=',context_today().strftime('%Y-%m-%d'))]"
                            context="{}" readonly="1"/>
                    <!-- <filter string="Last Year" domain="[('fiscalyear_id.date_start.year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_report_resource"/> -->
                    <separator/>
                    <filter string="This month" domain="[('month', 'like',context_today().strftime('%m'))]" name="current_month_resource"/>
                    <filter string="January" domain="[('month','=',1)]" name="january"/>
                    <filter string="February" domain="[('month','=',2)]" name="february"/>
                    <filter string="March" domain="[('month','=',3)]" name="march"/>
                    <filter string="April" domain="[('month','=',4)]" name="april"/>
                    <filter string="May" domain="[('month','=',5)]" name="may"/>
                    <filter string="June" domain="[('month','=',6)]" name="june"/>
                    <filter string="July" domain="[('month','=',7)]" name="july"/>
                    <filter string="August" domain="[('month','=',8)]" name="august"/>
                    <filter string="September" domain="[('month','=',9)]" name="september"/>
                    <filter string="October" domain="[('month','=',10)]" name="october"/>
                    <filter string="November" domain="[('month','=',11)]" name="november"/>
                    <filter string="December" domain="[('month','=',12)]" name="december"/>
                </search>
            </field>
        </record>

        <record id="emp_resource_report_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Total Headcount</field>
            <field name="res_model">mis_resources_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_current_month_resource': 1,'search_default_fiscalyr_filter': 1}</field>
            <!-- <field name="domain">[('employement_type.code','!=','O')]</field> -->
            <field name="view_id" ref="kw_mis_resource_list_tree"/>
        </record>

        <menuitem name="Total Headcount"
                  parent="kw_employee_info_system.employee_mis_report_menu"
                  id="menu_mis_resource_employee"
                  action="emp_resource_report_action"
                  groups="hr.group_hr_manager,kw_employee.group_hr_management,kw_employee_info_system.group_mis_user"
                  sequence="10"/>
    </data>
</odoo>                    