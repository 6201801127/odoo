<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_employee_budget_settings_tree_view" model="ir.ui.view">
            <field name="name">Employee Resource Budget Settings</field>
            <field name="model">hr_employee_resource_budget_settings</field>
            <field name="priority" eval="1010"/>
            <field name="arch" type="xml">
                <tree string="Resource Budget Setting Tree" edit='false' create="false" import="false" delete="false">
                    <field name="employee_id" string="Employee" readonly="1"
                           options="{'no_create': True, 'no_open': True, 'no_create_edit':True}"/>
                    <field name="emp_role" string="Emp. Role" readonly="1"
                           options="{'no_create': True, 'no_open': True, 'no_create_edit':True}"/>
                    <field name="emp_category" string="Emp. Category" readonly="1"
                           options="{'no_create': True, 'no_open': True, 'no_create_edit':True}"/>
                    <field name="budget_effective_from" string="Effective From" readonly="1"/>
                    <field name="effective_to" string="Effective To" readonly="1"/>

                </tree>
            </field>
        </record>

        <record id="kw_employee_budget_settings_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Resource Budget Setting</field>
            <field name="res_model">hr_employee_resource_budget_settings</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="employee_resource_budget_tree_view"/>
        </record>

    </data>
</odoo>