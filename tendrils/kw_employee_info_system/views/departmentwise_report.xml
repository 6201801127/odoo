<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="department_wise_report_graph_view">
        <field name="name">departmentwise_report.graph</field>
        <field name="model">department_wise_report</field>
        <field name="arch" type="xml">
            <graph string="Joining Report">
                <field name="fiscal_year" type="row"/>
                <field name="department" type="row"/>

            </graph>
        </field>
    </record>

    <record id="department_wise_report_search" model="ir.ui.view">
        <field name="name">department_wise_report.search</field>
        <field name="model">department_wise_report</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="fiscal_year" />
                <field name="month"/>
                <field name="year"/>
                <field name="quarter"/>


                <group expand="0" string="Group By">
                    <filter name="group_by_month_year" string="Monthly" domain="" context="{'group_by':'month_year'}"/>
                    <filter name="group_by_year" string="Yearly" domain="[]" context="{'group_by':'year'}"/>
                    <!-- <filter name="group_by_quarter" string="Quarter" domain="[]" context="{'group_by':'half_yearly_string'}"/> -->
                    <filter name="group_by_quarterly" string="Quarterly" domain="[]" context="{'group_by':'quarterly'}"/>
                    <filter name="group_by_department" string="Department" domain="[]" context="{'group_by':'department'}"/>

                    

                </group>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="department_wise_report_act_window">
        <field name="name">Departmentwise Report</field>
        <field name="res_model">department_wise_report</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,form</field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="kw_employee_info_system.department_wise_report_search"/>
        <field name="context">{}</field>  <!-- force empty -->
        <field name="help" type="html">
          <p class="o_view_nocontent_empty_folder">
            No content
          </p><p>
            From this report, you can have an overview on all depreciations. The
            search bar can also be used to personalize your assets depreciation reporting.
          </p>
        </field>
    </record>
    
    <menuitem id="departmentwise_report_menu"
                name="Department Wise Report"
                parent="kw_employee_info_system.employee_mis_report_menu"
                action="kw_employee_info_system.department_wise_report_act_window"
                sequence="106"/>
                
            
    
</odoo>