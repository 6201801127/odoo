<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="contract_end_report_tree" model="ir.ui.view">
            <field name="name">contract_end_report.tree</field>
            <field name="model">contract_end_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="code"/>
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="designation"/>
                    <field name="department"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                    <field name="project"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="year" invisible='1'/>
                    <field name="month" invisible='1'/>
                    <field name="days" invisible='1'/>
                </tree>
            </field>
        </record>
        <record id="contract_end_report_search" model="ir.ui.view">
            <field name="name">contract_end_report.view.search</field>
            <field name="model">contract_end_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="year"/>
                    <field name="month"/>
                    <filter string="This Year"
                            domain="[('year', '=',context_today().strftime('%Y'))]"
                            name="current_year_end_date"/>
                    <filter string="Last Year"
                            domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]"
                            name="last_year_end_date"/>
                    <filter string="30 Days" domain="[('days','&lt;=',30),('days','&gt;',0)]" name="last_30_days"/>
                    <filter string="15 Days" domain="[('days','&lt;=',15),('days','&gt;',0)]" name="last_15_days"/>
                    <filter string="7 Days" domain="[('days','&lt;=',7),('days','&gt;',0)]" name="last_7_days"/>
                    <filter string="Expired" domain="[('days','&lt;',0)]" name="expired"/>
                    <separator/>
                    <filter string="This Month" name="by_current_month_year" domain="[('month','=',True)]"/>
                    <filter string="January" domain="[('month','=',1)]" name="january_end_date"/>
                    <filter string="February" domain="[('month','=',2)]" name="february_end_date"/>
                    <filter string="March" domain="[('month','=',3)]" name="march_end_date"/>
                    <filter string="April" domain="[('month','=',4)]" name="april_end_date"/>
                    <filter string="May" domain="[('month','=',5)]" name="may_end_date"/>
                    <filter string="June" domain="[('month','=',6)]" name="june_end_date"/>
                    <filter string="July" domain="[('month','=',7)]" name="july_end_date"/>
                    <filter string="August" domain="[('month','=',8)]" name="august_end_date"/>
                    <filter string="September" domain="[('month','=',9)]" name="september_end_date"/>
                    <filter string="October" domain="[('month','=',0)]" name="october_end_date"/>
                    <filter string="November" domain="[('month','=',)]" name="november_end_date"/>
                    <filter string="December" domain="[('month','=',2)]" name="december_end_date"/>

                </search>
            </field>
        </record>
        <!-- kw_contract_end_log action window -->
        <record id="contract_end_report_action" model="ir.actions.act_window">
            <field name="name">Contract End Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contract_end_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Contract Log</p>
            </field>
        </record>

        <menuitem id="contract_log_menu"
                  name="Contract Log Report"
                  parent="employee_mis_report_menu"
                  action="contract_end_report_action"
                  sequence="4"/>
    </data>
</odoo>