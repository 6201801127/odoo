<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="vendorwise_wizard_form" model="ir.ui.view">
            <field name="name">vendor.wizard.view.form</field>
            <field name="model">vendor.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="financial_year_id"
                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Select Fiscal Year" name="wizard_fiscal_year"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="vendorwise_wizard_action" model="ir.actions.act_window">
            <field name="name">Fiscal Year</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vendor.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="hr_mis_vendorwise_records_menu"
                  name="Vendor Wise Report"
                  parent="hr.menu_open_view_employee_list_my"
                  action="vendorwise_wizard_action"
                  groups="kw_employee.group_payroll_manager"
                  sequence="12"/>
    </data>
</odoo>
