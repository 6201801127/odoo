<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_close_form_view" model="ir.ui.view">
            <field name="name">Employment Close</field>
            <field name="model">close_employment_wizard</field>
            <field name="arch" type="xml">
                <form string="Employment Close">
                    <sheet>
                        <group>
                            <field name="employee_id" required="1"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit':True}"/>
                            <field name="last_working_day" required="1" options="{'datepicker':{'minDate': 0}}"/>
                            <field name="reason" required="1"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Submit" name="action_close_employeement" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="employment_close_action" model="ir.actions.act_window">
            <field name="name">Employment Close Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">close_employment_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p>
                    created
                </p>
            </field>
        </record>

        <menuitem name="Close Employment"
                  parent="hr.menu_human_resources_configuration"
                  id="menu_employement_close"
                  sequence="200"
                  action="employment_close_action"
                  groups="hr.group_hr_manager"/>
    </data>
</odoo>    