<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="kw_employee_info_system_view" model="ir.ui.view">
		<field name="name">Employee Information System</field>
		<field name="model">kw_employee_info_system_wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="select_by" widget="radio" options="{'horizontal': true}"/>
						<field name="location_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="department_ids" domain="[('dept_type.code', '=', 'department')]" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="division_id" domain="[('dept_type.code', '=', 'division')]" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="section_id" domain="[('dept_type.code', '=', 'section')]" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="practise_id" domain="[('dept_type.code', '=', 'practise')]" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="employee_ids" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>

					</group>
				</group>
				<footer>
					<button name="view_page" string="view" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="kw_employee_info_system_action" model="ir.actions.act_window">
		<field name="name">Employee Information System</field>
		<field name="res_model">kw_employee_info_system_wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="kw_employee_info_system_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records to take action...
			</p>
		</field>
	</record>
	
	<!-- <menuitem name="Informations Of Employees" id="kw_employee_info_system_menu_child_root" parent="kw_employee_info_system_menu_root"
		action="kw_employee_info_system_action" sequence='1'/>		 		   -->

</odoo>
