<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_hr_appraisal">
            <field name="name">Appraisal</field>
            <field name="description">Helps to evaluate employees...</field>
            <field name="sequence">3</field>
        </record>
        <record id="group_appraisal_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
        </record>
        <record id="group_appraisal_disable_kra" model="res.groups">
            <field name="name">Disable KRA</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
        </record>
        <record id="group_appraisal_iaa" model="res.groups">
            <field name="name">IAA</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
        </record>
        <record id="group_appraisal_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
            <field name="implied_ids" eval="[(4, ref('group_appraisal_employee'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_appraisal_chro" model="res.groups">
            <field name="name">CHRO</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
            <field name="implied_ids" eval="[(4, ref('group_appraisal_employee'))]"/>
            <!-- <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/> -->
        </record>
        <record id="group_appraisal_ceo" model="res.groups">
            <field name="name">CEO</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
            <field name="implied_ids" eval="[(4, ref('group_appraisal_employee'))]"/>
            <!-- <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/> -->
        </record>
        <record id="group_appraisal_increment_promotion" model="res.groups">
            <field name="name">Increment &amp; Promotion</field>
            <field name="category_id" ref="kw_appraisal.module_category_hr_appraisal"/>
        </record>
        <record id="kw_hr_appraisal_manager_rule" model="ir.rule">
            <field name="name">Manager : View Appraisal All</field>
            <field name="model_id" ref="model_hr_appraisal"/>
            <field name="groups" eval="[(4, ref('kw_appraisal.group_appraisal_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="active" eval="True" />
        </record>
    
        <record id="kw_hr_appraisal_rule_employee" model="ir.rule">
            <field name="name">Manager : View Appraisal Real Own and Sub-ordinates</field>
            <field name="model_id" ref="model_hr_appraisal"/>
            <field name="domain_force">[('emp_id','child_of',user.employee_ids.ids)]</field>
            <field name="groups" eval="[(4,ref('kw_appraisal.group_appraisal_employee'))]"/>
        </record>

