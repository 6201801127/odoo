        <record id="shared_increment_promotion_manager_rule" model="ir.rule">
            <field name="name">Manager : Shared Increment and Promotion</field>
            <field name="model_id" ref="model_shared_increment_promotion"/>
            <field name="groups" eval="[(4, ref('kw_appraisal.group_appraisal_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="active" eval="True" />
        </record>
        <record id="shared_increment_promotion_chro_rule" model="ir.rule">
            <field name="name">CHRO : View Shared Increment and Promotion</field>
            <field name="model_id" ref="model_shared_increment_promotion"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('kw_appraisal.group_appraisal_chro'))]"/>
        </record>

        <record id="shared_increment_promotion_hod_record_rule" model="ir.rule">
            <field name="name">HOD : View Shared Increment and Promotion</field>
            <field name="model_id" ref="model_shared_increment_promotion"/>
            <field name="domain_force">[('iaas_ids','in',user.ids)]</field>
            <field name="groups" eval="[(4,ref('kw_appraisal.group_appraisal_employee'))]"/>
        </record>
        
        <record id="shared_increment_promotion_ceo_record_rule" model="ir.rule">
            <field name="name">CEO : View Shared Increment and Promotion</field>
            <field name="model_id" ref="model_shared_increment_promotion"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('kw_appraisal.group_appraisal_ceo'))]"/>
        </record>
        <record id="shared_increment_view_hod_record_rule" model="ir.rule">
            <field name="name">IAA : View Only Shared Increment and Promotion</field>
            <field name="model_id" ref="model_shared_increment_view"/>
            <field name="domain_force">[('iaas_ids','in',user.ids)]</field>
            <field name="groups" eval="[(4,ref('kw_appraisal.group_appraisal_iaa'))]"/>
        </record>
