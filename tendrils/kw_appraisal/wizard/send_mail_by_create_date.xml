<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="send_mail_by_create_date_form" model="ir.ui.view">
            <field name="name">send_mail_by_create_date.view.form</field>
            <field name="model">send_mail_by_create_date</field>
            <field name="arch" type="xml">
                <form>
                    <script>
	        			$(document).ready(function(){
	                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
	                    });
	        		</script>
                    <div class="d-flex jusitfy-content-center flex-column">
                        <div class="offset-2 col-8 offset-2 mb-4 text-success font-weight-bold h5 text-center"><p class="mb-1">Please enter the date to send the email for completing the appraisal process.</p> </div>
                        <div class="offset-2 col-8 offset-2 ">
                            <table class="mx-auto">
                                <tr>
                                    <td><label class="o_form_label mb-2 font-weight-bold" for="created_date">Date:</label></td>
                                    <td><field name="created_date" required='1'/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                   
                    <footer class="d-flex justify-content-center">
                        <button string='Submit' name="send_email_appraisal_fillup" 
                        type="object" class="btn font-weight-bold text-white" 
                        style="background-color: #108fbb;"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>