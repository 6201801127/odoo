<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- process_increment_promotion form view -->
        <record id="process_increment_promotion_view_form" model="ir.ui.view">
            <field name="name">process_increment_promotion.view.form</field>
            <field name="model">process_increment_promotion</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="period_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                            <field name="company_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                            <field name="country_id" attrs="{'invisible': [('company_id', '=', False)]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_process_increment_promotion" type="object"
                            string="Process Increment and Promotion" class="btn-primary"/>
                        <button name="update_changed_by_iaa" type="object"
                            string="Update IAA Changed Increment" class="btn-success"/>
                        <button name="update_ctc" type="object"
                            string="Update CTC" class="btn-warning"/>
                         <button name="update_dept_desg" type="object"
                            string="Update Department / Designation" class="btn btn-dark"/>
                       
                    </footer>
                </form>
            </field>
        </record>

        <!-- process_increment_promotion action window -->
        <record id="process_increment_promotion_action" model="ir.actions.act_window">
            <field name="name">Process Increment and Promotion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">process_increment_promotion</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="procee_increment_menu_act" name="Process Increment &amp; Promotion" parent="kw_appraisal.menu_configuration" action="process_increment_promotion_action" sequence="100"/>


        <!-- update_resigned_last_day form view -->
        <record id="update_resigned_last_day_view_form" model="ir.ui.view">
            <field name="name">update_resigned_last_day.view.form</field>
            <field name="model">update_resigned_last_day</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="period_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                            <field name="increment_ids"/>
                            <field name="id_from"/>
                            <field name="id_to"/>
                            <field name="joining_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_resigned_details" type="object"
                            string="Update Resigned Status" class="btn-primary"/>
                        <button name="update_changed_by_iaa" type="object"
                            string="Update IAA Changed Increment" class="btn-success"/>
                        <button name="delet_record" type="object"
                            string="Delete Record" class="btn-warning"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- update_resigned_last_day action window -->
        <record id="update_resigned_last_day_action" model="ir.actions.act_window">
            <field name="name">Update Resigned Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update_resigned_last_day</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Appraisal" id="menu_appraisal_technical_developer" parent="disable_debug_mode.menu_technical_developer" sequence="208"/>
        <menuitem name="Update Resigned Status" id="menu_update_resigned_status"
            parent="menu_appraisal_technical_developer" action='update_resigned_last_day_action' sequence="1"/>

    </data>
</odoo>