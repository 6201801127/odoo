<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="assign_appraisal_ratio_form" model="ir.ui.view">
            <field name="name">Kw apprisal ratio form</field>
            <field name="model">assign_appraisal_ratio</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <group>
                            <field name="department" domain="[('dept_type.code','=','department')]" options="{'no_open':True,'no_create_edit':True'}"/>
                        </group>
                        <group>
                            <field name="child_id">
                                <tree editable="bottom" create='false' delete='false'>
                                    <field name="department" options="{'no_open':True,'no_create_edit':True'}" force_save='1' readonly='1' />
                                    <field name="division" options="{'no_open':True,'no_create_edit':True'}" force_save='1' readonly='1' />
                                    <field name="section" options="{'no_open':True,'no_create_edit':True'}" force_save='1' readonly='1' />
                                    <field name="practice" options="{'no_open':True,'no_create_edit':True'}" force_save='1' readonly='1' />
                                    <field name="count_emp"/>
                                    <field name="per_inc"/>
                                    <field name="per_appraisal"/>
                                    <field name="per_kra"/>
                                </tree>
                            </field>
                        </group>
                    </div>
                    <footer>
                        <button string='Assign' name="assign_ration" type="object" class="btn font-weight-bold text-white" style="background-color: #108fbb;" groups="kw_appraisal.group_appraisal_manager"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="assign_appraisal_ratio_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Assign Appraisal Ratio</field>
            <field name="res_model">assign_appraisal_ratio</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <!-- <menuitem name="Assign" id="menu_assign_appraisal_ratio" action='assign_appraisal_ratio_actions' parent="menu_appraisal_ratio_perent" sequence="1"/> -->
    </data>
</odoo>
