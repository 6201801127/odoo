            <field name="name">kw_appraisal_module_send_specific form</field>
            <field name="model">send_specific_increment_promotion</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="increment_promotion_ids"  style="pointer-events:none;">
                            <tree create='0' edit='0' delete='0'>
                                <field name = "emp_code"/>
                                <field name = "name"/>
                                <field name = "job_id"/>
                                <field name = "date_of_joining"/>
                                <field name = "grade_band"/>
                                <field name = "department_id"/>
                            </tree>
                            </field>
                            <field name="sent_by_current_user" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_send_to_hod" string="Send to IAA" type="object" class=" btn btn-info" groups="kw_appraisal.group_appraisal_manager" attrs="{'invisible': [('sent_by_current_user', '=', True)]}" confirm="Are you sure you want to send data to IAAs?"/>
                        <button string="Close" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
