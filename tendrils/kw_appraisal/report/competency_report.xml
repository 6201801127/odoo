<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "model" -->
        <record id="view_competency_report_tree" model="ir.ui.view">
            <field name="name">view.competency_report.tree</field>
            <field name="model">competency_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="competency_report_tree" create="false" import="false" delete="false" edit="false">
                    <field name="emp_id" />
                    <!-- <field name="emp_name" /> -->
                    <field name="kw_ids" invisible="1"/>
                    <field name="finalcompetancy" />
                    <field name="behavior_indicator" />
                    <field name="competency" />
                </tree>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_competency_report_search" model="ir.ui.view">
            <field name="name">view.competency_report.search</field>
            <field name="model">competency_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="competency_report_search">
                    <field name="emp_id" />
                    <filter string="Current Period" name="filter_current_period" context="{'financial_year_check':1}" domain="[]"/>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_competency_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Competency Report</field>
            <field name="res_model">competency_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_current_period':1}</field>
            <field name="search_view_id" ref="view_competency_report_search" />
        </record>
    </data>
</odoo>