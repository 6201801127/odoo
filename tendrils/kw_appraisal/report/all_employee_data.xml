<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_emp_all_data_tree">
            <field name="name">Employee All Report</field>
            <field name="model">kw_emp_all_data</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="department" />
                    <field name="division" />
                    <field name="section" />
                    <field name="division" />
					<field name="practise" />
					<field name="budget_type" />
                    <field name="project" />
                    <field name="date_of_joining" />
                    <field name="emp_code" />
                    <field name="designation" />
                    <field name="reporting_authority" />
                    <field name="designation_of_ra" />
                    <field name="upper_ra" />
                    <field  name="upper_ra_designation" />
                </tree>
            </field>
        </record>


        <record id="kw_emp_all_data_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Details</field>
            <field name="res_model">kw_emp_all_data</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Employee Details" id="emp_details_menu_act"
            parent='appraisal_report_parent_menu_item' sequence="100"
            action="kw_emp_all_data_act_window" />

            <record id="employee_details_report_download_wizard" model="ir.ui.view">
                <field name="name">Download Form</field>
                <field name="model">employee_details_report_download</field>
                <field name="arch" type="xml">
                    <form string="Download Form 12-B">
                         <script>
                            $(document).ready(function(){
                                $(".modal-title").show();
                            });
                        </script>
                        <header>
                        </header>
                        <sheet>     
                            <group>
                                <field name="appr_emp_details_ids">
                                    <tree create='0' edit='0' delete='0'>
                                        <field name="department" />
                                        <field name="division" />
                                        <field name="section" />
                                        <field name="division" />
                                        <field name="practise" />
                                        <field name="budget_type" />
                                        <field name="project" />
                                        <field name="date_of_joining" />
                                        <field name="emp_code" />
                                        <field name="designation" />
                                        <field name="reporting_authority" />
                                        <field name="designation_of_ra" />
                                        <field name="upper_ra" />
                                        <field  name="upper_ra_designation" />
                                    </tree>
                                    </field>
                            </group>
                            
                        </sheet>
                        <footer>
                            <button name="download_emp_report" string="Download"
                                        type="object" class="oe_highlight"
                                        icon="fa-refresh"/>
                        </footer>
                    </form>
                </field>
            </record>
            <act_window id="action_download_emp_app_report_wizard"
                        name="Download"
                        src_model="kw_emp_all_data"
                        res_model="employee_details_report_download"
                        view_type="form" view_mode="form" view_id="employee_details_report_download_wizard"
                        key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}"
            />
    </data>
</odoo>