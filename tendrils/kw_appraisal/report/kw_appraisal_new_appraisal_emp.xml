<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="new_appraisal_employee_report_tree">
            <field name="name">new_appraisal_employee_report_tree</field>
            <field name="model">kw_appraisal_new_appraisal_emp</field>
            <field name="arch" type="xml">
                <tree create="false"  edit="false" delete="false" import="false" default_order="emp_id">	
                    <field name="appraisal_year"/>     
                    <field name="emp_code" string="Employee Code"/>
                    <field name="emp_id"  invisible='1'/>
                    <field name="name" string="Employee Name" />
                    <field name="department_id" string="Department"/>     
                    <field name="job_id" string="Designation"/>      
                    <field name="employement_type" string="Type of Employment"/>
                    <field name="budget_type"/>
                    <field name="date_of_joining" string="Date Of Joining"/>     
                    <field name="emp_survey_id"/>     
                    <field name="state" string="Status"/>    
                </tree>
            </field>
        </record>




        <record id="new_appraisal_employee_report_search" model="ir.ui.view">
            <field name="name">Appraisal New Employee Report</field>
            <field name="model">kw_appraisal_new_appraisal_emp</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="emp_id"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <filter string="Previous Period" name="filter_previous_period" domain="[('previous_year','=',True)]"/>
                    <group expand="0" string="Group By">
						<filter name="groupby_job_id" context="{'group_by': 'job_id'}" string="Designation"/>
						<filter name="groupby_dept" context="{'group_by': 'department_id'}" string="Department"/>
						<filter name="groupby_emp_survey_id" context="{'group_by': 'emp_survey_id'}" string="Appraisal Form"/>
						<filter name="groupby_state" context="{'group_by': 'state'}" string="Status"/>
						<filter name="groupby_appraisal_year" context="{'group_by': 'appraisal_year'}" string="Appraisal year"/>
						<filter name="groupby_type" context="{'group_by': 'employement_type'}" string="Type of Employment"/>
						<filter name="groupby_budget" context="{'group_by': 'budget_type'}" string="Budget"/>
					</group>
                </search>
            </field>
        </record>


        <record id="action_new_appraisal_employee_report" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">First Time Attended Report</field>
            <field name="res_model">kw_appraisal_new_appraisal_emp</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>


    </data>
</odoo>
