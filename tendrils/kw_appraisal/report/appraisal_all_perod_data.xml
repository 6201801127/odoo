<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >
        <record id="appraisal_all_perod_data_tree" model="ir.ui.view">
            <field name="name">Appraisal All Report</field>
            <field name="model">appraisal_all_perod_data</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='false'>
                    <field name="appr_id" invisible="1" />
                    <field name="appraisal_year"/>
                    <field name="e_code"/>
                    <field name="emp_id"/>
                    <field name="deg_id"/>
					<field name="dept_id"/>
					<field name="state"/>
                    <field name="score"/>
                    <field name="kra_score"/>
                    <field name="total_final_score"/>
                    <field name="increment_percentage"/>
                    <field name="employee_ctc"/>
                    <field name="final_increment" />
                    <field name="final_ctc" />
                    <field name="new_designation"/>
                </tree>
            </field>
        </record>

        <record id="appraisal_all_perod_data_search" model="ir.ui.view">
            <field name="name">Score VS Increment Report Search</field>
            <field name="model">appraisal_all_perod_data</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="emp_id"/>
                    <field name="deg_id"/>
					<field name="dept_id"/>
					<field name="state"/>
                    <filter string="Current Period" name="filter_current_period" context="{'financial_year_check':1}" domain="[]"/>
                </search>
            </field>
        </record>

        <record id="appraisal_all_perod_data_pivot" model="ir.ui.view">
            <field name="name">appraisal_all_perod_data_search.pivot</field>
            <field name="model">appraisal_all_perod_data</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <field name="emp_id" type="row"/>
                    <field name="appraisal_year" type="col"/>
                    <field name="total_final_score" type="measure"/>
                    <field name="final_increment" type="measure"/>
                </pivot>
            </field>
        </record>
    
        <record id="appraisal_all_perod_data_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Score VS Increment Report</field>
            <field name="res_model">appraisal_all_perod_data</field>
            <field name="view_mode">tree,pivot</field>
            <field name="search_view_id" ref='appraisal_all_perod_data_search'/>
            <!-- <field name="domain">[('state.sequence','in',[2,3,4])]</field> -->
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No appraisal report(s) found...
                </p>
            </field>
        </record>



    </data>
</odoo>
