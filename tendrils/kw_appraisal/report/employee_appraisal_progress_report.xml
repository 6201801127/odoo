<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="employee_appraisal_progress_report_tree">
            <field name="name">employee_appraisal_progress_report_tree</field>
            <field name="model">employee_appraisal_progress_report</field>
            <field name="arch" type="xml">
                <tree create="false"  edit="false" delete="false" import="false" default_order="emp_name">	<!--decoration-danger="day_status in ['2']"  decoration-warning="day_status in ['5']"  decoration-info="day_status in ['4']"   -->			
                    <field name="emp_name" string="Employee Name"/>
                    <field name="emp_code" string="Employee Code"/>
                    <field name="designation" string="Designation"/>      
                    <field name="department" string="Department"/>     
                    <field name="period" string="Period"/>     
                    <field name="total_score" string="Score"/>     
                    <field name="stage" string="Stage"/>     
                </tree>
            </field>
        </record>


        <record id="employee_appraisal_progress_report_pivot" model="ir.ui.view">
            <field name="name">employee_appraisal_progress_report_pivot</field>
            <field name="model">employee_appraisal_progress_report</field>
            <field name="arch" type="xml">
                <pivot string="Employee Appraisal Progress Report">
                    <field name="emp_name" type="row"/>
                    <field name="period" type="col"/>
                    <field name="stage" type="col" />
                    <field name="total_score" type="measure"/>
                </pivot>
            </field>
        </record>


        <record id="employee_appraisal_progress_report_search" model="ir.ui.view">
            <field name="name">Appraisal Progress Report</field>
            <field name="model">employee_appraisal_progress_report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="emp_name"/>
                    <field name="designation"/>
                    <field name="department"/>
                    <filter string="Current Period" name="filter_current_period" domain="[('current_year','=',True)]"/>
                    <filter string="Previous Period" name="filter_previous_period" domain="[('previous_year','=',True)]"/>
                </search>
            </field>
        </record>


        <record id="action_window_employee_appraisal_progress_report" model="ir.actions.act_window">
            <field name="name">Employee Appraisal Year Wise Report</field>
            <field name="res_model">employee_appraisal_progress_report</field>
            <field name="view_mode">pivot,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_current_period':1}</field>
            <field name="search_view_id" ref="employee_appraisal_progress_report_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>
    </data>
</odoo>
