<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="yearly_appraisal_progress_report_tree">
            <field name="name">yearly_appraisal_progress_report_tree</field>
            <field name="model">yearly_appraisal_progress_report</field>
            <field name="arch" type="xml">
                <tree create="false"  edit="false" delete="false" import="false" class="text-center">
                    <field name="financial_year" string="Financial Year" class="text-center"/>
                    <field name="level" string="Level" class="text-center"/>
                    <field name="total_emp" string="Total Employee" class="text-center"/>
                    <field name="male_total" string="Male Total" class="text-center"/>      
                    <field name="female_total" string="Female Total" class="text-center"/>     
                    <field name="age_group" string="Age Group" class="text-center"/>     
                    <field name="tenure_in_csm" string="Tenure (Years) in CSM" class="text-center"/> 

                    <field name="ignorant" string="Ignorant" invisible='1'/>     
                    <field name="ignorant_per" string="Ignorant Per" invisible='1'/>     
                    <field name="ign" string="Ignorant" class="text-center"/>  
                    <button name="check_ignorant" type="object" class="fa fa-location-arrow" attrs="{'invisible': [('ign', '=', False)]}"/> 

                    <field name="learner" string="Learner" invisible='1'/>   
                    <field name="learner_per" string="Learner Per" invisible='1'/>
                    <field name="lern" string="Learner" class="text-center"/> 
                    <button name="check_learner" type="object" class="fa fa-location-arrow" attrs="{'invisible': [('lern', '=', False)]}"/>

                    <field name="practitioner" string="Practitioner" invisible='1'/>
                    <field name="practitioner_per" string="Practitioner Per" invisible='1'/>
                    <field name="prac" string="Practitioner" class="text-center"/> 
                    <button name="check_practitioner" type="object" class="fa fa-location-arrow" attrs="{'invisible': [('prac', '=', False)]}"/>

                    <field name="expert" string="Expert" invisible='1'/>   
                    <field name="expert_per" string="Expert Per" invisible='1'/>
                    <field name="expt" string="Expert" class="text-center"/>  
                    <button name="check_expert" type="object" class="fa fa-location-arrow" attrs="{'invisible': [('expt', '=', False)]}"/>

                    <field name="role_model" string="Role Model" invisible='1'/> 
                    <field name="role_model_per" string="Role Model" invisible='1'/>
                    <field name="rlmdl" string="Role Model" class="text-center"/>
                    <button name="check_role_model" type="object" class="fa fa-location-arrow" attrs="{'invisible': [('rlmdl', '=', False)]}"/> 
                    
                    
                </tree>
            </field>
        </record>

        <record id="yearly_appraisal_progress_report_search" model="ir.ui.view">
            <field name="name">Yearly Appraisal Progress Report</field>
            <field name="model">yearly_appraisal_progress_report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <!-- <field name="emp_name"/>
                    <field name="designation"/>
                    <field name="department"/> -->
                    <filter string="Current Period" name="filter_current_period" domain="[('current_year','=',True)]"/>
                    <filter string="Previous Period" name="filter_previous_period" domain="[('previous_year','=',True)]"/>
                </search>
            </field>
        </record>



        <record id="action_window_yearly_appraisal_progress_report" model="ir.actions.act_window">
            <field name="name">Yearly Appraisal Progress Report</field>
            <field name="res_model">yearly_appraisal_progress_report</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_current_period':1}</field>
            <field name="search_view_id" ref=""/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found
                </p>
            </field>
        </record>
        <template id="assets_backend" name="kw_appraisal assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/kw_appraisal/static/src/css/button_style.css"/>
            </xpath>
        </template>

    </data>
</odoo>
