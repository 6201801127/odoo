<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >
        <record id="hr_appraisal_progress_report_view_tree" model="ir.ui.view">
            <field name="name">Appraisal progress Report</field>
            <field name="model">appraisal_progress_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="emp_code"/>
                    <field name="emp_name"/>
                    <field name="designation"/>
                    <field name="department"/>
					<field name="third_score"/>
                    <field name="third_stage"/>
                    <field name="second_score"/>
                    <field name="second_stage"/>
					<field name="first_score"/>
                    <field name="first_stage"/>
                    <field name="fourth_score"/>
                    <field name="fourth_stage"/>
                    <field name="fifth_score"/>
                    <field name="fifth_stage"/>
                    <field name="sixth_score"/>
                    <field name="sixth_stage"/>
                </tree>
            </field>
        </record>

        <record id="hr_appraisal_progress_report_view_search" model="ir.ui.view">
            <field name="name">Appraisal Progress Report</field>
            <field name="model">appraisal_progress_report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="designation"/>
                    <field name="department"/>
                </search>
            </field>
        </record>

        <record id="hr_appraisal_progress_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Appraisal Progress Report</field>
            <field name="res_model">appraisal_progress_report</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{'create':False,'edit':False,'delete':False,'import':False,'duplicate':False}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No Appraisal progress report(s) found...
                </p>
            </field>
        </record>


    </data>
</odoo>
