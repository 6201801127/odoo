<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tree view for "model" -->
        <record id="view_score_vs_increment_report_tree" model="ir.ui.view">
            <field name="name">view.score_vs_increment_report.tree</field>
            <field name="model">hr.appraisal</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="score_vs_increment_report_tree" create='0' edit='0' delete='0' import='false' default_order="appraisal_year desc">
                    <field name="appraisal_year" />
                    <field name="emp_id" readonly="1" options="{'no_quick_create':True,'no_open':True,'no_create_edit':True}"/>
					<field name="deg_id" readonly="1"/>
					<field name="dept_id" readonly="1"/>
					<field name="state" readonly="1"/>
					<field name="score" readonly="1"/>
					<field name="kra_score" readonly="1"/>
                    <field name="total_final_score" readonly="1"/>
                    <field name="increment_percentage" readonly="1" groups="kw_employee.group_payroll_manager"/>
                    <field name="employee_ctc" readonly="1" groups="kw_employee.group_payroll_manager"/>
                    <field name="final_increment" groups="kw_employee.group_payroll_manager"/>
                    <field name="update_increment" invisible="1"/>
                    <field name="final_ctc" readonly="1" groups="kw_employee.group_payroll_manager"/>
                    <field name="new_designation" groups="kw_employee.group_payroll_manager" options="{'no_quick_create':True,'no_open':True,'no_create_edit':True}"/>
                    <field name="new_grade" groups="kw_employee.group_payroll_manager" options="{'no_quick_create':True,'no_open':True,'no_create_edit':True}"/>
                </tree>
            </field>
        </record>
        
        
        <!-- Search view for "model" -->
        <record id="view_score_vs_increment_report_search" model="ir.ui.view">
            <field name="name">view.score_vs_increment_report.search</field>
            <field name="model">hr.appraisal</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="score_vs_increment_report_search">
                    <field name="emp_id"/>
                    <field name="deg_id"/>
					<field name="dept_id"/>
					<field name="state"/>   
                    <filter string="Current Period" name="filter_current_period" context="{'filter_current_period':1}" domain="[]"/>
                    <filter string="Previous Period" name="filter_previous_period" context="{'filter_previous_period':1}" domain="[]"/>
                </search>
            </field>
        </record>

        <record id="view_score_vs_increment_report_pivot" model="ir.ui.view">
            <field name="name">score_vs_increment_report.pivot</field>
            <field name="model">hr.appraisal</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <field name="emp_id" type="row"/>
                    <field name="appraisal_year" type="col"/>
                    <field name="total_final_score" type="measure"/>
                    <field name="final_increment" type="measure"/>
                </pivot>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_score_vs_increment_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Score Vs Increment Report</field>
            <field name="res_model">hr.appraisal</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_appraisal.view_score_vs_increment_report_tree')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('kw_appraisal.view_score_vs_increment_report_pivot')})]"/>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_current_period':1,'create':False,'edit':False,'delete':False,'import':False,'duplicate':False}</field>
            <field name="search_view_id" ref="view_score_vs_increment_report_search" />
        </record>
    </data>
</odoo>