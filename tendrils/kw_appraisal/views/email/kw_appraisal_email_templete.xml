<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_appraisal_only_increment_email_template" model="mail.template">
            <field name="name">Appraisal Result e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Interim Promotion | FY24-25</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="email_cc">leadership@csm.tech,asit.mohanty@csm.tech,swagatika.behera@csm.tech</field>
            <field name="model_id" ref="kw_appraisal.model_shared_increment_promotion"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.employee_id.name},
                                    </h5>
                                    %if not object.revised_job_id:
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        We are happy to inform you that considering your Increment review request and contributions to CSM's growth and success, the increment has been revised, effective from <b>${format_tz(ctx['effective_date'], format="%B-%Y")}</b>.
                                    </p>
                                    %endif
                                    %if object.revised_job_id:

                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       We are happy to inform you that considering your valuable contributions to CSM's growth and success, you have been promoted to a new designation</b>. 
                                     </p>
                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                      Below are the details of your new designation.
                                    </p>
                                    %else:
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please be informed that, considering your Appraisal score and contributions to CSM's growth and success, your salary has been incremented, effective from <b>${format_tz(ctx['effective_date'], format="%B-%Y")}</b>.
                                    </p>
                                     </p>
                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Below are the details of your new salary.
                                    </p>
                                    %endif
                                </div>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <table border="1" style="border-collapse: collapse;font-size: 16px; width:100%" cellspacing="0" cellpadding="5">
                                    %if ctx['inc'] > 0:

                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;width:40%">
                                                Incremented CTC (Annum)
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;width:60%">
                                                ${ctx['incremented_ctc'][:-7]} ${ctx['incremented_ctc'][-3:]} 
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                Revised Increment CTC (Annum)
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                ${ctx['revised_increment_ctc'][:-7]} ${ctx['revised_increment_ctc'][-3:]} 
                                            </td>
                                        </tr>

                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                Revised Increment CTC (Monthly)
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                ${ctx['monthly_revised_ctc'][:-7]} ${ctx['monthly_revised_ctc'][-3:]} 
                                            </td>
                                        </tr>
                                        %endif

                                        %if object.revised_job_id:
                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                Current Designation
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                ${object.job_id.name}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                Promoted Designation
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                ${object.revised_job_id.name}
                                            </td>
                                        </tr>
                                        %endif
                                        %if object.revised_grade_id:
                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                New Grade
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                ${object.revised_grade_id.name}
                                            </td>
                                        </tr>
                                        %endif
                                        %if ctx.get('jd'):
                                        <tr>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                JD of Promoted Designation
                                            </td>
                                            <td style="font-weight:700;color:#676767;height: 34px;">
                                                ${(ctx.get('jd','') or '-') | safe}
                                            </td>
                                        </tr>
                                        %endif
                                    </table>
                                </div>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                   
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    %if ctx['inc'] > 0:
                                        <b>Please note that Arrear if any, will be adjusted in the subsequent month's salary payout.</b><br/>
                                        %endif
                                    
                                        %if object.new_job_id:
                                        All the terms and conditions outlined in your initial appointment letter will remain unchanged.
                                        %endif
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">Congratulations once again on this well-deserved recognition!</p>
                                    
                                  
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Best wishes and congratulations!
                                    </p>

                                    <br/><br/>
                                        <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>

    </data>
    
</odoo>
