<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_employee_appraisal_draft_email_template" model="mail.template">
          <field name="name">Appraisal draft e-mail template</field>
          <field name="email_from">${user.email or object.create_uid.email}</field>
          <field name="subject">Annual Appraisal for FY ${(object.appraisal_year)} | Schedule</field>
          <field name="email_to">${object.emp_id.work_email}</field>
          <field name="model_id" ref="kw_appraisal.model_hr_appraisal"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${(object.emp_id.name)},
                                    </h5>
                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">Welcome to the Annual Appraisal period for FY&nbsp;${(object.appraisal_year)}.</p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">Your assessment during this period will be evaluated by Self, your Line Manager and Up-line Manager.</p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;"> Please find the details of the Appraisal period and complete it within the specified timeline:</p>
                                </div>
                               
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="300px">
                                        <u>
                                           Self Assessment Period:
                                        </u>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                           &nbsp;&nbsp; Start Date:
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.app_period_from, tz='UTC', format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            &nbsp;&nbsp; End Date:
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.appraisal_deadline, tz='UTC', format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                </table>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="300px">
                                        <u>
                                           Line Manager Assessment Period:
                                        </u>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                           &nbsp;&nbsp; Start Date:
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                             ${format_tz(object.hr_lm_start_date, tz='UTC', format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            &nbsp;&nbsp; End Date:
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.hr_lm_end_date, tz='UTC', format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                </table>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="300px">
                                        <u>
                                           Up-line Manager Assessment Period:
                                        </u>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                           &nbsp;&nbsp; Start Date:
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.hr_ulm_start_date, tz='UTC', format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            &nbsp;&nbsp; End Date:
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${format_tz(object.hr_ulm_end_date, tz='UTC', format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Wish you All the Best!
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email.       
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
       </record>


    </data>
</odoo>