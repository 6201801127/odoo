<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_ulm_reminder_email_template" model="mail.template">
          <field name="name">Appraisal Reminder ULM e-mail template</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">ULM | Reminder Mail</field>
          <field name="email_to">${'hr_manager' in ctx and ctx['hr_manager'].work_email or ''}</field>
          <field name="model_id" ref="kw_appraisal.model_hr_appraisal"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td> 
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is a gentle reminder for submitting ULM Appraisal of the following member(s):
                                    </p>
                                </div>

                                <table border="1" style="width:100%;margin-left:1.2rem;border-collapse: collapse;font-size: 16px; margin-top:2rem;">
                                    <tr>
                                        <td style="height: 30px; padding-left:20px; padding-right: 20px; font-weight:700;color:#676767;text-align:left;"> Sl.No. </td>
                                        <td style="height: 30px; padding-left:20px;font-weight:700;color:#676767;text-align:left;"> Employee Name</td>
                                        <td style="height: 30px; padding-left:20px;font-weight:700;color:#676767;text-align:left;"> End Date</td>
                                    </tr>
                                    
                                    % for appraisal in ctx['appraisal_records']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:10%;" >
                                                ${loop.index}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:40%;" >
                                                ${appraisal.emp_id.name}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;padding-left: 20px;height: 34px;width:30%;" >
                                                ${format_tz(appraisal.hr_ulm_end_date, tz='UTC', format='%d-%b-%Y')}
                                            </td>
                                        </tr>
                                    % endfor
                                </table>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>
                                        This is an auto-generated mail from Tendrils Intranet Portal. Please do not reply to this mail. 

                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
       </record>
    </data>
</odoo>