<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_goal_take_action_mail_template" model="mail.template">
          <field name="name">Goal Take Action Mail Template</field>
          <field name="email_from">${object.employee_id.parent_id.work_email or ''}</field>
          <field name="subject">Goal and Milestone Update || ${dict(object.fields_get(allfields=['state'])['state']['selection'])[object.state]}</field>
          <field name="email_to">${object.employee_id.work_email or ''}</field>
          <field name="model_id" ref="kw_appraisal.model_kw_appraisal_goal"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.employee_id.name} (${object.employee_id.emp_code}),
                                    </h5>
                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">${object.employee_id.parent_id.name} (${object.employee_id.parent_id.emp_code}) has ${dict(object.fields_get(allfields=['state'])['state']['selection'])[object.state]} your new milestone details.</p>
                                </div>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
                    
            </field>
       </record>
    </data>
</odoo>