<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_self_to_lm_email_template" model="mail.template">
          <field name="name">Appraisal self to lm e-mail template</field>
          <field name="email_from">${object.emp_id.work_email or user.email}</field>
          <field name="subject">Self Appraisal | Submitted by  ${object.emp_id.name} (${object.emp_id.job_id.name})</field>
          <field name="email_to">${object.hr_manager_id.work_email}</field>
          <field name="model_id" ref="kw_appraisal.model_hr_appraisal"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.hr_manager_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       Self Appraisal form has been submitted by ${object.emp_id.name} (${object.emp_id.job_id.name}).</p> 
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">Please log in to Tendrils and give your Scores and Opinion by ${format_tz(object.hr_lm_end_date, tz='UTC', format='%d-%b-%Y')}.</p><br/>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
       </record>
    </data>
</odoo>