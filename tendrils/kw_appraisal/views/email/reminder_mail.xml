<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_reminder_self_email_template" model="mail.template">
          <field name="name">Appraisal Reminder self e-mail template</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">Self Appraisal | Reminder Mail</field>
          <field name="email_to">${object.emp_id.work_email}</field>
          <field name="model_id" ref="kw_appraisal.model_hr_appraisal"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                  <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">This is a gentle reminder that the last date for submitting Self-Appraisal Form is ${format_tz(object.appraisal_deadline, tz='UTC', format='%d-%b-%Y')}.</p>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">Please log in to Tendrils and Submit your Self-Appraisal form by ${format_tz(object.appraisal_deadline, tz='UTC', format='%d-%b-%Y')}.</p>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        <br/>
                                        This is an auto-generated mail from Tendrils Intranet Portal. Please do not reply to this mail. 

                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
       </record>
    </data>
</odoo>