<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">

		<record id="kw_appraisal_master_actions_window" model="ir.actions.act_window">
			<field name="name">Assign Template</field>
			<field name="res_model">kw_appraisal_employee</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>
		<!-- model.name form view -->
		<record id="kw_appraisal_employee_form" model="ir.ui.view">
			<field name="name">Kw apprisal form</field>
			<field name="model">kw_appraisal_employee</field>
			<field name="arch" type="xml">
				<form string="Assessment Survey">
					<sheet>
						<group>
							<field name="kw_survey_id"/>
							<field name="department_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
							<field name="division" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
							<field name="job_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
							<field name="level_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
							<field name="employee_id" widget="many2many" context="{'tree_view_ref':'kw_appraisal.view_hr_employee_kw_appraisal_tree'}">
								<tree>
									<field name="name"/>
									<field name="emp_code"/>
									<field name="job_id"/>
									<field name="parent_id"/>
								</tree>
							</field>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_hr_employee_kw_appraisal_tree" model="ir.ui.view">
            <field name="name">view.hr.employee.kw.survey.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id" string="Designation"/>
                    <field name="department_id"/>
					<field name="job_branch_id"/>
                    <field name="work_email"/>
                    <field name="mobile_phone"/>
                    <field name="epbx_no"/>
                </tree>
            </field>
        </record>

		<!-- model.name tree view -->
		<record id="kw_appraisal_employee_tree" model="ir.ui.view">
			<field name="name">Kw apprisal tree</field>
			<field name="model">kw_appraisal_employee</field>
			<field name="arch" type="xml">
				<tree>
					<!-- <field name="template_name" string='Template name'></field> -->
					<field name="kw_survey_id" string='Appraisal Form'/>
					<field name="employee_id" string="Total Employee"/>
				</tree>
			</field>
		</record>

		<record id="appraisal_employee_search_view" model="ir.ui.view">
			<field name="name">appraisal_employee_search_view</field>
			<field name="model">kw_appraisal_employee</field>
			<field name="arch" type="xml">
				<search string="Appraisal Form Information">
					<field name="kw_survey_id"/>
					<field name="employee_id"/>
					<group expand="0" string="Group By">
						<filter name="groupby_employee_name" string="Employee Name" domain="[]"
						        context="{'group_by':'employee_id'}"
						        help="Group Employee Name Wise"/>
						<filter name="groupby_appraisal_form" context="{'group_by': 'kw_survey_id'}"
						        string="Appraisal Form"/>
					</group>
				</search>
			</field>
		</record>
	</data>
</odoo>
