<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_appraisal_group_config_tree" model="ir.ui.view">
            <field name="name">Group Configuration Tree</field>
            <field name="model">appraisal_group_configuration</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="name"/>
                    <field name="employee_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1'/>
                </tree>
            </field>
        </record>

        <record id="kw_appraisal_access_config_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Access Configuration</field>
            <field name="res_model">appraisal_group_configuration</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>


        <menuitem name="Access Configuration" id="menu_kw_appraisal_access_config" action='kw_appraisal_access_config_actions' parent="menu_configuration" sequence="21"/>

    </data>
</odoo>
