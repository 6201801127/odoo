<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record id="kw_employee_score_view_tree" model="ir.ui.view">
            <field name="name">Kw Employee Score tree</field>
            <field name="model">kw_employee_score</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="year_id"/>
                    <field name="employee_id"/>
                    <field name="appraisal_mark"/>
                    <field name="kra"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_employee_score_form">
            <field name="name">Kw Employee Score form</field>
            <field name="model">kw_employee_score</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="year_id"/>
                                <field name="employee_id"/>
                                <field name="appraisal_mark"/>
                                <field name="kra"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->

        <!-- actions views Opening-->
        <record id="kw_employee_score_actions_window" model="ir.actions.act_window">
            <field name="name">Employee Score</field>
            <field name="res_model">kw_employee_score</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Appraisal Year To Show...
                </p>
            </field>
        </record>
        <!-- actions views Ending-->

        <!-- Previous Appraisal -->
    <record id="kw_previous_view_tree" model="ir.ui.view">
        <field name="name">Previous Appraisal</field>
        <field name="model">kw_employee_score</field>
        <field name="arch" type="xml">
            <tree create='false' edit='false'>
                <field name="year"/>
                <field name="prd_no"/>
                <field name="appraisal_mark"/>
                <field name="kra"/>
                <button name="previous_appraisal_button" type="object" string="View Form" class="btn btn-primary o_select_file_button"></button>
            </tree>
        </field>
    </record>

    <!-- actions views Opening-->
        <record id="kw_previous_appraisal_actions_window" model="ir.actions.act_window">
            <field name="name">Previous Appraisal</field>
            <field name="res_model">kw_employee_score</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_previous_view_tree"/>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Previous Appraisal...
                </p>
            </field>
        </record>
    <!-- actions views Ending-->
        <menuitem name="Employee Score" id="employee_score_menu" parent="archive_menu" sequence="2" action="kw_employee_score_actions_window"/>
        <menuitem name="Previous Appraisal" parent="menu_hr_appraisal" id="menu_previous_appraisal_url" action="kw_previous_appraisal_actions_window" sequence="99"/>
    </data>
</odoo>