<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="lm_appraisal_tree_view">
            <field name="name">LM appraisal tree</field>
            <field name="model">hr.appraisal</field>
            <!-- <field name="view_id" ref="kw_appraisal.lm_appraisal_tree_view"/> -->
            <field name="arch" type="xml">
                <tree create='false' edit='false' delete="0" import='false'>
                    <field name="date_time" invisible="1"/>
                    <field name="emp_id"/>
                    <field name="deg_id"/>
                    <field name="dept_id"/>
                    <field name="state_sequence" invisible="1"/>
                    <field name="hr_lm_start_date"/>
                    <field name="hr_lm_end_date"/>
                    <field name="state" invisible="1"/>
                    <field name="survey_state_id" invisible="1" />
                    <field name="self_status"/>
					<field name="lm_status"/>
					<field name="ulm_status"/>
                    <field name="company_id" invisible="1"/>
                    <field name="compare_lm_date" invisible="1"/>
                    <field name="compare_lm_end_date" invisible="1"/>
                    <field name="reassessment" invisible="1"/>
                    <button name="action_start_appraisal" type="object" string="Take Action" class="btn btn-primary o_select_file_button" attrs="{'invisible': ['&amp;',('reassessment','=',False),'|',('compare_lm_date','=',True),'|',('compare_lm_end_date','=',True),'|',('state','=', 1),'|',('state','=', 5),'|',('state','=',2),'|',('state','=',4),('state','=',6)]}"></button>
                    <button name="view_results" attrs="{'invisible': [('state_sequence','in',[1,2])]}" type="object" string="View Form" class="btn btn-primary o_select_file_button"/>
                </tree>
            </field>
        </record>

        <record id="lm_appraisal_kanban" model="ir.ui.view">
            <field name="name">LM appraisal kanban</field>
            <field name="model">hr.appraisal</field>
            <field name="arch" type="xml">
                <kanban edit="false" quick_create="false">
                    <field name="color"/>
                    <field name="state"/>
                    <field name="reassessment" invisible="1"/>
                    <field name="date_time" invisible="1"/>
                    <field name="compare_lm_date" invisible="1"/>
                    <field name="compare_lm_end_date" invisible="1"/>
                    <field name="self_status"/>
					<field name="lm_status"/>
					<field name="ulm_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click mt-3">
                                <div class="oe_kanban_content">
                                    <div class="row">
                                        <div class="col-sm-8">
                                            <div>
                                                <strong>
                                                    <field name="emp_id"/>
                                                </strong>
                                            </div>
                                                Start Date:
                                            <span>
                                                <i>
                                                    <field name="hr_lm_start_date"/>
                                                </i>
                                            </span>
                                            <br/>

                                            <t t-if="record.hr_lm_end_date.raw_value and record.hr_lm_end_date.raw_value &lt; (new Date())" t-set="red">oe_kanban_text_red</t>
                                                End Date: 
                                            <span t-attf-class="#{red}">
                                                <i>
                                                    <field name="hr_lm_end_date"/>
                                                </i>
                                            </span>
                                            <br/>
                                            SELF status: 
                                            <span>
                                                <field name="self_status"/>
                                            </span>
                                            <br/>
                                            ULM Status: 
                                            <span>
                                                <field name="ulm_status"/>
                                            </span>
                                        </div>
                                        <div class="col-sm-4 text-right">
                                            <div class="mb-5">
                                                <t t-if="record.lm_status.raw_value == 'In Progress'">
													<span class="h3 text-default">
														<i>
															<field name="lm_status"/>
														</i>
													</span>
												</t>
												<t t-elif="record.lm_status.raw_value == 'Draft'">
													<span class="h3 text-info">
														<i>
															<field name="lm_status"/>
														</i>
													</span>
												</t>
												<t t-elif="record.lm_status.raw_value == 'Completed'">
													<span class="h3 text-success">
														<i>
															<field name="lm_status"/>
														</i>
													</span>
												</t>
												<t t-elif="record.lm_status.raw_value == 'Not Started'">
													<span class="h3 text-danger">
														<i>
															<field name="lm_status"/>
														</i>
													</span>
												</t>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="oe_footer">
                                        <button name="action_start_appraisal" type="object" class="btn btn-primary o_select_file_button" attrs="{'invisible': ['&amp;',('reassessment','=',False),'|',('compare_lm_date','=',True),'|',('compare_lm_end_date','=',True),'|',('state','=', 1),'|',('state','=', 5),'|',('state','=',2),'|',('state','=',4),('state','=',6)]}">Take Action</button>
                                        <button name="view_results" type="object" class="btn btn-primary o_select_file_button float-right"> View Form</button>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="lm_actions_window" model="ir.actions.act_window">
            <field name="name">LM Appraisal</field>
            <field name="res_model">hr.appraisal</field>
            <field name="domain">[('hr_manager_id.user_id','=',uid)]</field>
            <field name="context">{'financial_year_check':1}</field>
            <field name="search_view_id" ref='kw_appraisal.appraisal_search_view'/>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('lm_appraisal_tree_view')}),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('lm_appraisal_kanban')})]"/>
            <field name='view_mode'>kanban,tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					You have no LM Appraisal...
                </p>
            </field>
        </record>
    </data>
</odoo>