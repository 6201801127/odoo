<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_appraisal_report_view_tree" model="ir.ui.view">
            <field name="name">Appraisal User Wise report tree</field>
            <field name="model">hr.appraisal</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="e_code"/>
                    <field name="e_name"/>
                    <field name="deg_id"/>
                    <field name="dept_id"/>
                    <field name="div_id"/>
                    <field name="sec_id"/>
                    <field name="pract_id"/>
                    <field name="ra_id" string="Adminstrative Authority"/>
                    <field name="emp_survey_id" string="Template"/>
                    <field name="state" string="Current Status"/>
                    <field name="score"/>
                    <field name="kra_score"/>
                    <field name="total_score"/>
                </tree>
            </field>
        </record>

        <record id="hr_appraisal_report_view_search" model="ir.ui.view">
            <field name="name">Appraisal User Wise Report Search</field>
            <field name="model">hr.appraisal</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="emp_id"/>
                    <field name="deg_id"/>
                    <field name="dept_id"/>
                    <field name="emp_survey_id"/>
                    <filter string="Current Period" name="filter_current_period" context="{'filter_current_period':1}" domain="[]"/>
                    <filter string="Previous Period" name="filter_previous_period" context="{'filter_previous_period':1}" domain="[]"/>
                </search>
            </field>
        </record>

        <record id="kw_appraisal_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Score Card</field>
            <field name="res_model">hr.appraisal</field>
            <field name="view_mode">tree</field>
            <field name='search_view_id' ref='hr_appraisal_report_view_search'/>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_current_period':1,'create':False,'edit':False,'delete':False,'import':False,'duplicate':False}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No appraisal user wise report(s) found...
                </p>
            </field>
        </record>

        <record id="hr_appraisal_report_view_act_window_tree" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_appraisal_report_view_tree"/>
            <field name="act_window_id" ref="kw_appraisal_report_act_window"/>
        </record>

    </data>
</odoo>
