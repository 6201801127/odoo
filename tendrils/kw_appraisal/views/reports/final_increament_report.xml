<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_final_increment_tree" model="ir.ui.view">
            <field name="name">view.final_increment.tree</field>
            <field name="model">hr.appraisal</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="final_increment_tree" editable="top" decoration-danger="applied_eos == True">
                    <field name="emp_id" readonly="1" options="{'no_quick_create':True,'no_open':True,'no_create_edit':True}"/>
					<field name="deg_id" readonly="1"/>
					<field name="dept_id" readonly="1"/>
                    <field name="date_of_joining" />
					<field name="state" readonly="1"/>
                    <field name="training_percentage" readonly="1" invisible='1'/>
					<field name="score" readonly="1"/>
					<field name="kra_score" readonly="1"/>
                    <field name="total_final_score"  readonly="1"/>
                    <field name="increment_percentage"  readonly="1"  groups="kw_employee.group_payroll_manager"/>
                    <field name="employee_ctc"  readonly="1" groups="kw_employee.group_payroll_manager"/>
                    <field name="final_increment" groups="kw_employee.group_payroll_manager"/>
                    <field name="update_increment" invisible="1" />
                    <field name="final_ctc"  readonly="1" groups="kw_employee.group_payroll_manager"/>
                    <field name="new_designation" groups="kw_employee.group_payroll_manager" options="{'no_quick_create':True,'no_open':True,'no_create_edit':True}"/>
                    <field name="new_grade" groups="kw_employee.group_payroll_manager" options="{'no_quick_create':True,'no_open':True,'no_create_edit':True}"/>
                    <field name="applied_eos" invisible="1" />
                </tree>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_final_increment_search" model="ir.ui.view">
            <field name="name">view.final_increment.search</field>
            <field name="model">hr.appraisal</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="final_increment_search">
                    <field name="emp_id"/>
					<field name="deg_id"/>
					<field name="dept_id"/>
					<field name="state"/>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_final_increment_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Increment &amp; Promotion</field>
            <field name="res_model">hr.appraisal</field>
            <field name="view_mode">tree</field>
            <field name='search_view_id' ref='view_final_increment_search'/>
            <field name="domain">[]</field>
            <field name="context">{'financial_year_check':1,'create':False,'edit':False,'delete':False,'import':False,'duplicate':False}</field>
            <field name="view_id" ref="view_final_increment_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Final increment Report found...
                </p>
            </field>
        </record>
        
        <!-- <menuitem  id="menu_final_increment_report"  name="Increment &amp; Promotion"  action="action_final_increment_act_window" sequence="2" parent="menu_hr_appraisal" groups="kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager" /> -->
    </data>
</odoo>
