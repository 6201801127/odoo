<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_appraisal_increment_master_tree" model="ir.ui.view">
            <field name="name">Increment Master Tree</field>
            <field name="model">increment_master</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="period_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' attrs="{'readonly': [('process_bol', '=', True)]}"/>
                    <field name="department" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' attrs="{'readonly': ['|',('process_bol', '=', True),('period_id', '=', False)]}"/>
                    <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('process_bol', '=', True)]}" domain="[('parent_id','=',department)]"/>
                    <!-- <field name="level"  options="{'no_open': True,'no_create':True,'no_edit':True}" required='1' attrs="{'readonly': ['|',('department', '=', False),('process_bol', '=', True)]}" invisible="1"/> -->
                    <field name="grade_ids" widget="many2many_tags" required='1' options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': ['|',('process_bol', '=', True)]}"/>
                    <field name="emp_count" string='Employee Count'/>
                    <field name="per_increment" required='1' attrs="{'readonly': [('process_bol', '=', True)]}"/>
                    <field name="process_bol" readonly='1' string='Added in Increment'/>
                </tree>
            </field>
        </record>

        <record id="kw_appraisal_increment_master_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Increment Master</field>
            <field name="res_model">increment_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>


        <menuitem name="Increment Master" id="menu_kw_appraisal_increment_master" action='kw_appraisal_increment_master_actions' parent="kw_appraisal.menu_configuration" sequence=""/>
    </data>
</odoo>
