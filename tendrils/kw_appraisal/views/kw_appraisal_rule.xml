<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- kw_appraisal_rule tree view -->
        <record id="kw_appraisal_rule_view_tree" model="ir.ui.view">
            <field name="name">kw_appraisal_rule.view.tree</field>
            <field name="model">kw_appraisal_rule</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="year_id"/>
                </tree>
            </field>
        </record>
        <!-- kw_appraisal_rule form view -->
        <record id="kw_appraisal_rule_view_form" model="ir.ui.view">
            <field name="name">kw_appraisal_rule.view.form</field>
            <field name="model">kw_appraisal_rule</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="year_id"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="calculation" string='Calculation Description'/>
                            <field name="description" string='Example'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_appraisal_rule_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Appraisal Rule</field>
            <field name="res_model">kw_appraisal_rule</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Appraisal Rule" id="menu_kw_appraisal_rule" action='kw_appraisal_rule_actions' parent="kw_appraisal.menu_configuration" sequence="40"/>
    </data>
</odoo>
