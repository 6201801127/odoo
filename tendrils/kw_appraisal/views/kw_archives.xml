<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record id="kw_archives_view_tree" model="ir.ui.view">
            <field name="name">Kw archives tree</field>
            <field name="model">kw_archives_year</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="year"/>
                    <field name="kw_period_id"/>
                    <field name="period_no"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->
        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_archives_form">
            <field name="name">Kw archives form</field>
            <field name="model">kw_archives_year</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="kw_period_id"/>
                                <field name="period_no"/>
                                <field name="year"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="archive_kanban" model="ir.ui.view">
            <field name="name">archive kanban</field>
            <field name="model">kw_archives_year</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="kw_period_id"/>
                    <field name="period_no"/>
                    <field name="year"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content ">
                                <div class="row">
                                    <div class="col-sm-8">
                                        <div>
                                        Period: <field name="period_no"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-4">
                                        <button name="view_results" type="object" class="btn btn-primary o_select_file_button"> View Form</button>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- actions views Opening-->
        <record id="kw_archives_actions_window" model="ir.actions.act_window">
            <field name="name">Archive Year</field>
            <field name="res_model">kw_archives_year</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <!-- <field name="context">{'group_by':'year'}</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Appraisal Year To Show...
                </p>
            </field>
        </record>
        <!-- actions views Ending-->

        <!-- explicit form view definition Ending -->
        <menuitem name="Archive Year" id="archive_menu" parent="menu_configuration" sequence="5"/>
        <menuitem name="Year" id="year_menu" parent="archive_menu" sequence="1" action="kw_archives_actions_window"/>
    </data>
</odoo>