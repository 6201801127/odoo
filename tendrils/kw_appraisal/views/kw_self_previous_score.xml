<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Previous Appraisal -->
            <record id="kw_previous_view_tree" model="ir.ui.view">
                <field name="name">Previous Appraisal</field>
                <field name="model">kw_employee_score</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="year"/>
                        <field name="prd_no"/>
                        <field name="appraisal_mark"/>
                        <field name="kra"/>
                        <button name="previous_appraisal_button" type="object" string="View Form" class="btn btn-primary o_select_file_button"></button>
                    </tree>
                </field>
            </record>

        <!-- actions views Opening-->
        <record id="kw_self_previous_appraisal_actions_window" model="ir.actions.act_window">
            <field name="name">Previous Appraisal</field>
            <field name="res_model">kw_employee_score</field>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_previous_view_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Previous Appraisal...
                </p>
            </field>
        </record>
    <!-- actions views Ending-->

        <menuitem name="Previous Appraisal" parent="menu_hr_appraisal" id="menu_self_previous_appraisal" action="kw_self_previous_appraisal_actions_window" groups="kw_appraisal.group_appraisal_employee"/>    
    </data>
</odoo>