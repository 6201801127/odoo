<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_appraisal_template_ratio_form" model="ir.ui.view">
            <field name="name">Kw template ratio form</field>
            <field name="model">kw_appraisal_template_ratio</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <group>
                            <field name="year_id" options="{'no_open':True,'no_create_edit':True'}" required='1'/>
                            <field name="survey_template_ids" domain="[('survey_type.code','=','appr')]" options="{'no_open':True,'no_create_edit':True'}" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="ratio_details_ids">
                                <tree editable="bottom" create='false' delete='false'>
                                    <field name="survey_id" options="{'no_open':True,'no_create_edit':True'}" force_save='1' readonly='1' />
                                    <field name="employee_count" readonly='1' force_save='1'/>
                                    <field name="per_inc"  force_save='1' />
                                    <field name="per_kra" force_save='1'/>
                                    <field name="per_appraisal" force_save='1'/>
                                    <field name="per_training" force_save='1'/>
                                </tree>
                            </field>
                        </group>
                    </div>
                    <footer>
                        <button string='Assign' name="assign_ratio" type="object" class="btn font-weight-bold text-white" style="background-color: #108fbb;" groups="kw_appraisal.group_appraisal_manager"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- kw_appraisal_ratio_details tree view -->
        <record id="kw_appraisal_template_score_view_view_tree" model="ir.ui.view">
            <field name="name">kw_appraisal_template_score_view.view.tree</field>
            <field name="model">kw_appraisal_template_score_view</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="survey_id" options="{'no_open':True,'no_create_edit':True'}" force_save='1' readonly='1' />
                    <field name="employee_count" readonly='1' force_save='1'/>
                    <field name="per_inc"  force_save='1' />
                    <field name="per_kra" force_save='1'/>
                    <field name="per_appraisal" force_save='1'/>
                    <field name="per_training" force_save='1'/>
                </tree>
            </field>
        </record>

        <record id="kw_appraisal_template_ratio_search" model="ir.ui.view">
            <field name="name">Kw template ratio Search</field>
            <field name="model">kw_appraisal_template_score_view</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="survey_id"/>
                    <field name="employee_count"/>
                    <field name="per_inc"/>
                    <field name="per_appraisal"/>
                    <field name="per_kra"/>
                </search>
            </field>
        </record>

        <record id="kw_appraisal_template_ratio_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Assign Appraisal Ratio</field>
            <field name="res_model">kw_appraisal_template_ratio</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <record id="kw_appraisal_ratio_details_actions" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Appraisal Ratio</field>
            <field name="res_model">kw_appraisal_template_score_view</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref='kw_appraisal_template_ratio_search'/>
            <field name="context">{'create':0,'edit':1}</field>
        </record>

        <menuitem name="Assign" id="menu_kw_appraisal_template_ratio" action='kw_appraisal_template_ratio_actions' parent="kw_appraisal.menu_appraisal_ratio_perent" sequence="3"/>
        <menuitem name="View" id="menu_kw_view_template_ratio" action='kw_appraisal_ratio_details_actions' parent="kw_appraisal.menu_appraisal_ratio_perent" sequence="4"/>
    </data>
</odoo>
