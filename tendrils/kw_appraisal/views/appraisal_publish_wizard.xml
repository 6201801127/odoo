<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="appraisal_publish_wizard_mail_wizard_form" model="ir.ui.view">
            <field name="name">Send Mail Wizard</field>
            <field name="model">appraisal_publish_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <b>
                                <h2 class="text-center text-uppercase text-primary mb -5">Are you sure you want to send publish mail ?</h2>
                            </b>
                            <center>
                                <button name="process_eligible_users" type="object" class="btn-success mr-2">Send</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="resend_appraisal_publish_wizard_mail_wizard_form" model="ir.ui.view">
            <field name="name">Resend Mail Wizard</field>
            <field name="model">appraisal_publish_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <b>
                                <h2 class="text-center text-uppercase text-primary mb -5">Are you sure you want to send REpublish mail ?</h2>
                            </b>
                            <center>
                                <button name="resend_appraisal_increment" type="object" class="btn-success mr-2">Send</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>