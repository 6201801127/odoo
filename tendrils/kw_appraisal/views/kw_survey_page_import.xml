<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="kw_survey_page_form">
            <field name="name">KW Form view for survey page</field>
            <field name="model">survey.page</field>
            <field name="arch" type="xml">
                <form string="Survey Page">
                    <sheet>
                        <div class="oe_title" style="width: 100%;">
                            <label for="survey_id" class="oe_edit_only"/>
                            <h1>
                                <field name="survey_id" placeholder="Survey Name" domain="[('survey_type.code', '=', 'appr')]" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            </h1>
                            <separator />
                            <label for="title" class="oe_edit_only"/>
                            <h1>
                                <field name="title" style="width: 50%;" placeholder="Page Title" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            </h1>
                        </div>
                        <field name="question_ids" nolabel="1" mode="tree">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="question"/>
                                <field name="type"/>
                                <field name="constr_mandatory"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="kw_survey_page_tree">
            <field name="name">KW Tree view for survey page</field>
            <field name="model">survey.page</field>
            <field name="arch" type="xml">
                <tree string="Survey Page">
                    <field name="sequence" widget="handle"/>
                    <field name="title"/>
                    <field name="survey_id"/>
                    <field name="question_ids" string="#Questions"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_action_survey_page_form">
            <field name="name">Pages</field>
            <field name="res_model">survey.page</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_survey_page_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_survey_page_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                No pages found
                </p>
            </field>
        </record>

        <menuitem name="Pages" id="kwantify_survey_page" groups="base.group_no_one" parent="kwantify_survey_menu" action="kw_action_survey_page_form" sequence="2"/>
        <record model="ir.ui.menu" id="kw_appraisal.kwantify_survey_page">
			<field name="groups_id" eval="[(6, 0, [ref('kw_appraisal.group_appraisal_manager')])]"/>
		</record>

    </data>
</odoo>
