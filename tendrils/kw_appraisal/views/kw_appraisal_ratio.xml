<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_appraisal_ratio_form" model="ir.ui.view">
            <field name="name">Kw apprisal ratio form</field>
            <field name="model">kw_appraisal_ratio</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="department" domain="[('dept_type.code','=','department')]" options="{'no_open':True,'no_create_edit':True'}"/>
                            <field name="division" attrs="{'invisible':[('division','=',False)]}" domain="[('dept_type.code','=','division'),('parent_id','=',department)]" options="{'no_open':True,'no_create_edit':True'}"/>
                            <field name="section" attrs="{'invisible':[('section','=',False)]}" domain="[('dept_type.code','=','section'),('parent_id','=',division)]" options="{'no_open':True,'no_create_edit':True'}"/>
                            <field name="practice" attrs="{'invisible':[('practice','=',False)]}" domain="[('dept_type.code','=','practice'),('parent_id','=',section)]" options="{'no_open':True,'no_create_edit':True'}"/>
                            <field name="per_inc"/>
                            <field name="per_appraisal"/>
                            <field name="per_kra"/>
                        </group>
                        <group>
                            <field name="dep_emp">
                                <tree>
                                    <field name="name"/>
                                    <field name="emp_code"/>
                                    <field name="job_id"/>
                                    <field name="job_branch_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_appraisal_ratio_tree" model="ir.ui.view">
            <field name="name">Kw apprisal ratio tree</field>
            <field name="model">kw_appraisal_ratio</field>
            <field name="arch" type="xml">
                <tree default_order="department,division,section,practice">
                    <field name="department"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practice"/>
                    <field name="count_emp"/>
                    <field name="per_inc"/>
                    <field name="per_appraisal"/>
                    <field name="per_kra"/>
                </tree>
            </field>
        </record>

        <record id="kw_appraisal_ratio_search" model="ir.ui.view">
            <field name="name">kw_appraisal_ratio search</field>
            <field name="model">kw_appraisal_ratio</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="department"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practice"/>
                    <group expand="0" string="Group By">
						<filter name="groupby_department" context="{'group_by': 'department'}" string="Department"/>
					</group>
                </search>
            </field>
        </record>

        <record id="kw_appraisal_ratio_actions" model="ir.actions.act_window">
            <field name="name">Appraisal Ratio</field>
            <field name="res_model">kw_appraisal_ratio</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_groupby_department': 1,'create':False,'delete':False,'import':False,'duplicate':False}
            </field>
        </record>

        <menuitem name="Appraisal Score Calculation" id="menu_appraisal_ratio_perent" parent="menu_configuration" sequence="98"/>

        <!-- <menuitem name="View" id="menu_kw_appraisal_view_ratio" action='kw_appraisal_ratio_actions' parent="menu_appraisal_ratio_perent" sequence="2"/> -->

    </data>
</odoo>
