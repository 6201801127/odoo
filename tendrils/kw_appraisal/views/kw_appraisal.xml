<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- actions views Opening-->
        <record id="kw_appraisal_actions_window" model="ir.actions.act_window">
            <field name="name">Appraisal Period</field>
            <field name="res_model">kw_appraisal</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					Create Your Appraisal Period...
                </p>
            </field>
        </record>
        <!-- actions views Ending-->

        <!-- explicit tree view definition Opening -->
        <record id="kw_appraisal_view_tree" model="ir.ui.view">
            <field name="name">Kw appraisal tree</field>
            <field name="model">kw_appraisal</field>
            <field name="arch" type="xml">
                <tree  default_order="year desc">
                    <field name="year"/>
                    <!-- <field name="employee"/> -->
                    <field name="emp_strt_date" string='Self Start Date'/>
                    <field name="emp_end_date" string='Self End Date'/>
                    <field name="lm_start_date" string='LM Start Date'/>
                    <field name="lm_end_date" string='LM End Date'/>
                    <field name="ulm_start_date" string='ULM Start Date'/>
                    <field name="ulm_end_date" string='ULM End Date'/>
                    <field name="hr_state_id" string='Hr State' invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_appraisal_form">
            <field name="name">Kw appraisal form</field>
            <field name="model">kw_appraisal</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_start_appraisal_all" string="Start Appraisal" class="oe_highlight oe_read_only" type="object" attrs="{'invisible': [('hr_state_id','=',True)]}" groups="kw_appraisal.group_appraisal_manager"/>
                        <button name="action_update_appraisal" string="Update Appraisal" class="oe_highlight oe_read_only" type="object" attrs="{'invisible': [('hr_state_id','=',False)]}" groups="kw_appraisal.group_appraisal_manager"/>
                        <button name="action_send_mail" string="Send Mail" class="oe_highlight oe_read_only" type="object" attrs="{'invisible': [('hr_state_id','=',False)]}" groups="kw_appraisal.group_appraisal_manager"/>
                        <button name="action_send_mail_new_app" string="Send By Creation Date" class="oe_highlight oe_read_only" type="object" attrs="{'invisible': [('hr_state_id','=',False)]}" groups="kw_appraisal.group_appraisal_manager"/>

                    </header>
                    <sheet>
                        <div>
                            <label for="year" class="oe_readonly" />
                            <h1>
                                <field name="year" class="oe_inline" placeholder="Year"/>
                            </h1>
                            <field name="hr_state_id" string='Hr State' invisible="1"/>
                        </div>
                        <group> 
                            <group string='Self Appraisal'>
                                <field name="create_date" invisible="1"/>
                                <field name="emp_strt_date" string="Start Date" autocomplete="off"/>
                                <field name="emp_end_date" string="End Date" autocomplete="off"/>
                            </group>
                            <group string='LM Assessment'>
                                <field name="lm_start_date" string="Start Date" autocomplete="off"/>
                                <field name="lm_end_date" string="End Date" autocomplete="off"/>
                            </group>
                            <group string='ULM Assessment'>
                                <field name="ulm_start_date" string="Start Date" autocomplete="off"/>
                                <field name="ulm_end_date" string="End Date" autocomplete="off"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="employee" string='Assessment Template' widget="one2many_tags" options="{'no_create': True, 'no_create_edit':True}">
                                    <!-- <tree>
                                        <field name="kw_survey_id" string="Template"/>
                                        <field name="employee_id" string="Total Employee"/>
                                    </tree> -->
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit form view definition Ending -->
        <menuitem name="Configuration" id="menu_configuration" parent="menu_hr_appraisal_root" sequence="6" groups="kw_appraisal.group_appraisal_manager"/>
        <menuitem name="Appraisal Form" id="kwantify_survey_menu" parent="menu_configuration" sequence="1"/>
        <menuitem name="Assign Template" id="menu_assessment_survey" parent="menu_configuration" action="kw_appraisal_master_actions_window" sequence="2"/>
        <menuitem name="Appraisal Period" id="menu_appraisal_period" parent="menu_configuration" action="kw_appraisal_actions_window" sequence="3"/>
    </data>
</odoo>