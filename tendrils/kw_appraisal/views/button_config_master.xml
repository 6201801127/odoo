<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="btn_config_master_appraisal_tree" model="ir.ui.view">
            <field name="name">IAA - Dept. Configuration</field>
            <field name="model">kw_appraisal_btn_config_master</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="department_ids" widget='many2many_tags' options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'department')]"/>
                    <field name="user_ids" widget='many2many_tags' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <!-- <field name="active"/> -->
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record id="btn_config_master__appraisal_act_window" model="ir.actions.act_window">
            <field name="name">IAA - Dept. Configuration</field>
            <field name="res_model">kw_appraisal_btn_config_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
        </record>
        <!-- mail_cc_config tree view -->
        <record id="mail_cc_config_view_tree" model="ir.ui.view">
            <field name="name">mail_cc_config.view.tree</field>
            <field name="model">mail_cc_config</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <!-- Add your fields here -->
                    <field name="period_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                    <field name="mail_to_appr_manager"  widget='many2many_tags' options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                </tree>
            </field>
        </record>

        <record id="mail_cc_config_act_window" model="ir.actions.act_window">
            <field name="name">Increment Email CC Configuration</field>
            <field name="res_model">mail_cc_config</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="IAA - Dept. Configuration" id="btn_config_master_app_menu" parent="menu_configuration" action="btn_config_master__appraisal_act_window" sequence="20"/>

        <menuitem name="Increment email configuration" id="mail_cc_config" parent="menu_configuration" action="mail_cc_config_act_window" sequence="22"/>
    </data>
</odoo>
