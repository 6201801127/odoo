<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_appraisal_wizard_form_view" model="ir.ui.view">
            <field name="name">Appraisal Wizard</field>
            <field name="model">appraisal_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <b><h2 class="text-left text-primary mb-3">Are you sure you want to publish appraisal ?</h2></b>
                            <field name="appraisal_publish" widget="radio" options="{'horizontal':false}" required="1"/>
                            <br/><br/>
                            <button name="action_publish_appraisal" type="object" class="btn-success mr-2">Publish</button>
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                            <footer></footer>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_appraisal_update_score_form_view_wizard" model="ir.ui.view">
            <field name="name">Update Score</field>
            <field name="model">update_score_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <b><h2 class="text-center text-primary mb-3">Are you sure you want to update score ?</h2></b>
                            <center>
								<button name="update_score_lm" type="object" class="btn-success mr-2">Update as per LM</button>
								<button name="update_score_lm_ulm" type="object" class="btn-warning mr-2">Update as per (LM + ULM) / 2</button>

								<button string="Cancel" class="btn-danger" special="cancel"/>
								<footer></footer>
							</center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_appraisal_update_increment_form_view_wizard" model="ir.ui.view">
            <field name="name">Update Increment</field>
            <field name="model">update_increment_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <b><h2 class="text-center text-primary mb-3">Are you sure you want to update increment ?</h2></b>
                            <center>
								<button name="action_update_increment" type="object" class="btn-success mr-2">Update</button>
								<button string="Cancel" class="btn-danger" special="cancel"/>
								<footer></footer>
							</center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>