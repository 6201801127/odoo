<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="kw_survey_label_tree">
            <field name="name">kw survey_label_tree inherit</field>
            <field name="model">survey.label</field>
            <field name="arch" type="xml">
                <tree string="Survey Label">
                    <field name="sequence" widget="handle"/>
                    <field name="question_id"/>
                    <field name="value"/>
                    <field name="quizz_mark"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="kw_survey_label_form">
            <field name="name">kw survey_label_form inherit</field>
            <field name="model">survey.label</field>
            <field name="arch" type="xml">
                <form string="Survey Label">
                    <sheet>
                        <group>
                            <field name="question_id"/>
                            <field name="value"/>
                            <field name="quizz_mark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_action_survey_label_act_window">
            <field name="name">Labels</field>
            <field name="res_model">survey.label</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_survey_label_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_survey_label_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                No appraisal labels found
                </p>
            </field>
        </record>

        <menuitem name="Options" groups="base.group_no_one" id="kwantify_survey_label" parent="kwantify_survey_menu" action="kw_action_survey_label_act_window" sequence="4"/>
        <record model="ir.ui.menu" id="kw_appraisal.kwantify_survey_label">
			<field name="groups_id" eval="[(6, 0, [ref('kw_appraisal.group_appraisal_manager')])]"/>
		</record>

    </data>
</odoo>
