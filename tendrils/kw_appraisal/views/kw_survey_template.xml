<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">
		<!-- Survey start page :start -->
		<template id="kw_survey_init" name="Survey">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<div class="jumbotron mt32">
							<h1 t-field="survey.title" class="navbar bg-light text-dark font-weight-bold"/>
							<div t-field="survey.description" class="oe_no_empty"/>
							<div class="mt32 text-center">
								<a role="button" class="btn btn-primary btn-lg"
								   t-att-href="'/kw/survey/fill/%s/%s' % (slug(survey), token)">
									Start Appraisal
								</a>
								<img src="/kw_appraisal/static/src/image/An_Easygoing_Cartoon_Businessman.svg"
								     style="height:350px;" class="mt-20"/>
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>
		<!-- "Thank you" message when the survey is completed -->
		<template id="kw_sfinished" name="Tendrils Survey Finished">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<div class="jumbotron mt32 text-center">
							<div class="swal2-icon swal2-success swal2-animate-success-icon" style="display: flex;"
							     data-oe-model="ir.ui.view" data-oe-id="1641" data-oe-field="arch"
							     data-oe-xpath="/t[1]/t[1]/div[1]/div[1]/div[1]/div[1]">
								<span class="swal2-success-line-tip">
								</span>
								<span class="swal2-success-line-long">
								</span>
								<div class="swal2-success-ring">
								</div>
							</div>
							<h1>
								Thank you !!
							</h1>
							<div t-field="survey.thank_you_message" class="oe_no_empty"/>
							<a t-if="self"
							   t-att-href="'/web#action=kw_appraisal.self_actions_window&amp;model=hr_appraisal&amp;view_type=tree&amp;menu_id=%s' % (self)"
							   class="btn btn-secondary">
								Back to Appraisal
							</a>
							<a t-if="lm"
							   t-att-href="'/web#action=kw_appraisal.lm_actions_window&amp;model=hr_appraisal&amp;view_type=tree&amp;menu_id=%s' % (lm)"
							   class="btn btn-secondary">
								Back to Appraisal
							</a>
							<a t-if="ulm"
							   t-att-href="'/web#action=kw_appraisal.ulm_actions_window&amp;model=hr_appraisal&amp;view_type=tree&amp;menu_id=%s'  % (ulm)"
							   class="btn btn-secondary">
								Back to Appraisal
							</a>
							<!-- <button onclick='window.history.go(-2);' class="btn btn-secondary">Back to appraisal</button> -->
							<!-- <a role="button" t-attf-href="/web#view_type=kanban&amp;model=hr_appraisal&amp;action=kw_appraisal.hr_appraisal_action_form&amp;menu_id=hr_appraisal.menu_employee_appraisal" class="btn btn-secondary">Back to appraisal</a> -->
						</div>
					</div>
				</div>
			</t>
		</template>
		<!-- Message when a login is required -->
		<template id="survey_auth_required" name="Login required">
			<t t-call="website.layout">
					<div class="container">
						<div class="jumbotron mt32 text-center">
							<h3 class='text-uppercase text-danger'>
								Authentication required !
							</h3>
							<h5>
							You were logged out. <br/>Please login to continue.
							</h5>
							<img src="/kw_appraisal/static/src/image/login.png" style="height:200px;width:250px;" class="mt-20"/>
							<h5>
								<br/>
								<a class="btn btn-info btn-xs fa fa-sign-in"
								   t-attf-href="/web/login">
									LOG IN
								</a>
							</h5>
						</div>
					</div>
			</t>
		</template>
		<!-- Message when the survey is not open -->
		<template id="survey_notopen" name="Survey not open">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<div class="jumbotron mt32 text-center">
							<h1>
								Not open
							</h1>
							<pre class="text-justify">
								This survey is not open.
								May be your survey period is not started or this survey has been closed.
								Thank you for your interest !!
							</pre>
						</div>
					</div>
				</div>
			</t>
		</template>
		<!-- Survey start page :End -->
		<template id="kw_survey_assets_init" inherit_id="kw_appraisal.kw_survey_init">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
				<link href="/kw_appraisal/static/src/css/front_style.css" rel="stylesheet"/>
				<script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js">
				</script>
			</xpath>
		</template>
		<template id="kw_survey_assets_finished" inherit_id="kw_appraisal.kw_sfinished">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
				<link href="/kw_appraisal/static/src/css/front_style.css" rel="stylesheet"/>
				<script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js">
				</script>
				<link href="/kw_appraisal/static/src/css/success.css" rel="stylesheet"/>
			</xpath>
		</template>
		<template id="kw_survey_assets_auth" inherit_id="kw_appraisal.survey_auth_required">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
				<link href="/kw_appraisal/static/src/css/front_style.css" rel="stylesheet"/>
				<script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js">
				</script>
			</xpath>
		</template>
		<template id="kw_survey_assets_notopen" inherit_id="kw_appraisal.survey_notopen">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
				<link href="/kw_appraisal/static/src/css/front_style.css" rel="stylesheet"/>
				<script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js">
				</script>
			</xpath>
		</template>
	</data>
</odoo>
