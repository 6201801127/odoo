<templates id="template" xml:space="preserve">
    <t t-name="employeeDashboard">
        <div class="p-5 container-fluid">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card emp-card heading">
                        <div class="card-body-emp text-center cr-sr-portlet-card-body-emp">
                            <span class="rcm-h1 font-weight-bold text-center">HEADCOUNT DASHBOARD</span>
                        </div>
                    </div>
                    <div class="header-filter position-absolute top-0 end-0 me-1 mt-1">
                    <button class="btn text-center dashboard-button btn-outline-primary font-weight-bold" title="Filter" id="all-fy-wise-filter">
                        <span class="fa fa-filter" height="20px" width="20px"></span>
                    </button>
                    <button title="Refresh" class="btn text-center employee_filter dashboard-button btn-outline-primary font-weight-bold" id="refresh-dashborad" type="button" aria-expanded="true">
                        <i class="fa fa-repeat"/>
                    </button>
                </div>
                <div class="fy-filter-wrapper">
                    <div class="fy-filter_container d-flex align-items-center flex-column justify-content-center">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div><p class="h5 mb-0"> Filter </p></div>
                                <div>
                                    <button class="ks_dashboard_item_action btn dropdown-toggle btn-xs o-no-caret btn" id="fy_wise_filter">
                                        <span class="fa fa-times"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="font-weight-bold">Choose Year</td>
                                        <td class="font-weight-bold">:</td>
                                        <td>
                                            <select class="form-control" id="filter-dashboard-fy">
                                                <option value="0" selected="selected">Select</option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
                                <div class="clearfix"></div>
                                <div class="col-12 text-center">
                                    <button class="btn btn-primary btn-sm" id="fiscal_year_filter">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <span class="header-filter position-absolute" style="margin-top: 4rem;color:red;">Upto Date : <t t-esc="widget.currentDate"/> </span>
            </div>
        </div>
            <script>
                $(document).ready(function(){
                    $('[data-toggle="tooltip"]').tooltip();
                });
            </script>
            <div class="row mb-4">
                <!-- Total Headcount Box -->
                <div class="col-2 total_head_count card rcm-wf-card-emp" data-toggle="tooltip" title="Total Headcount">
                    <div class="card-body-emp text-center">
                        <span class="mb-2 h2 font-weight-bold"><i class="fas fa-users fa-3x"></i></span>
                        <p class="rcm-h2 font-weight-bold" style="color:#118fbb;"><t t-esc="widget.total_head_count_value"/></p>
                    </div>
                </div>
                
                <!-- Head Count Break Up -->
                <div class="col-5 card rcm-wf-card-emp">
                    <div class="card-body-emp text-center">
                        <span class="mb-2 h2 font-weight-bold"> Head Count Break Up </span>
                        <div class="row">
                            <div class="col total_csm_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3">CSM</p>
                                    <span class="text-sucess h1" style="color: #f7941d;"><t t-esc="widget.csm_head_count_value"/></span>
                                </div>
                            </div>
                            <div class="col total_subsidary_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3">Subsidiaries</p>
                                    <span class="text-sucess h1" style="color: #d7182a;"><t t-esc="widget.susidary_head_count_value"/></span>
                                </div>
                            </div>
                            <div class="col total_outsource_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3">Outsourced</p>
                                    <span class="text-sucess h1" style="color: #118fbb;"><t t-esc="widget.outsource_head_count_value"/></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- CSM Break Up -->
                <div class="col-3 card rcm-wf-card-emp">
                    <div class="card-body-emp text-center">
                        <span class="mb-2 h2 font-weight-bold"> CSM Break Up </span>
                        <div class="row">
                            <div class="col total_offsite_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3">Offsite</p>
                                    <span class="text-sucess h1" style="color: #ff1e5c;"><t t-esc="widget.offsite_head_count_value"/></span>
                                </div>
                            </div>
                            <div class="col total_onsite_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3">Onsite</p>
                                    <span class="text-sucess h1" style="color: #ffa51e;"><t t-esc="widget.onsite_head_count_value"/></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Gender Break Up -->
                <div class="col-2 card rcm-wf-card-emp">
                    <div class="card-body-emp text-center">
                        <span class="mb-2 h2 font-weight-bold"> Gender </span>
                        <div class="row">
                            <div class="col total_female_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3"><i class="fas fa-female fa-2x"></i></p>
                                    <span class="text-sucess h1" style="color: #e71eff;"><t t-esc="widget.total_female_count_value"/></span>
                                </div>
                            </div>
                            <div class="col total_male_head_count">
                                <div class="square-box-card zoom-effect btn-hd">
                                    <p class="h3"><i class="fas fa-male fa-2x"></i></p>
                                    <span class="text-sucess h1" style="color: #1E90FF;"><t t-esc="widget.total_male_count_value"/></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <style>
                .gridd {
                    font-size: 1vw;
                    display: grid;
                    grid-template-rows: 1fr 1fr;
                    grid-template-columns: 1fr 1fr 1fr;
                }
                .border_0
                {
                    border: 3px solid rgb(187, 203, 247);
                }
                .box1 {
                    grid-row: 1 / 3;
                    grid-column: 1 / 2;
                }
                .box2 {
                    grid-row: 1 / 2;
                    grid-column: 2 / 3;
                }
                
                .box3 {
                    grid-row: 2 / 3;
                    grid-column: 2 / 3;
                }
                
                .box4 {
                    grid-row: 1 / 3;
                    grid-column: 3 / 4;
                }
            </style>
            <div class="row gridd">
                <section class="box1 border_0">
                    <div id="dept_wise_male_fenale_count_container" style="height:100%"></div>
                </section>
                
                <section class="box2 border_0">
                    <div id="location_wise_male_female_count_container"></div>
                </section>
                <section class="box3 border_0" >
                    <div id="level_wise_male_female_count_container"></div>
                </section>
                <section class="box4 border_0">
                    <div id="desg_wise_male_female_count_container" style="height:100%"></div>
                </section>


                <section class="border_0">
                    <div id="age_wise_male_female_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="tenure_wise_male_female_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="fy_wise_resource_addition_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="sbu_wise_resource_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="role_wise_resource_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="quater_wise_resource_addition_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="outsource_wise_resource_count_container"></div>
                </section>
                <section class="border_0">
                    <div id="day_status_wise_resource_count_container"></div>
                </section>
               

            </div>
        </div>
    </t>
</templates>
