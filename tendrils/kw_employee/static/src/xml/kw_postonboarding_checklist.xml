<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="kw_employee.kw_postonboarding_checklist_report">
		<div class="container-fluid mt-5">
			<div class="table-responsive">
                <div class="card">
	                <div class="card-body">
	                    <h3 class="text-center mt-2 mb-4">Post Onboarding Checklist Report</h3>
	                    <div class="row">
		                    <div class="col-sm-10">
			                    <div class="row form-group">
			                        <div class="col-sm-2">
										<label for="onboarding_chcklist_month" class="mdb-main-label">Month:</label>
			                            <select class="form-control" id="onboarding_chcklist_month">
			                                <option value="1">January</option>
				                            <option value="2">February</option>
				                            <option value="3">March</option>
				                            <option value="4">April</option>
				                            <option value="5">May</option>
				                            <option value="6">June</option>
				                            <option value="7">July</option>
				                            <option value="8">August</option>
				                            <option value="9">September</option>
				                            <option value="10">October</option>
				                            <option value="11">November</option>
				                            <option value="12">December</option>
			                            </select>
			                        </div>
				                    <div class="col-sm-2">
										<label for="onboarding_chcklist_year" class="mdb-main-label">Year:</label>
					                    <select class="form-control" id="onboarding_chcklist_year">
											<option value="2021">2021</option>
					                        <option value="2020">2020</option>
						                    <option value="2019">2019</option>
						                    <option value="2018">2018</option>
					                    </select>
				                    </div>
				                    <div class="col-sm-2">
										<label for="onboarding_checklist_department" class="mdb-main-label">Department:</label>
					                    <select class="form-control" id="onboarding_checklist_department" rel="division">

					                    </select>
				                    </div>
				                    <div class="col-sm-2">
										<label for="onboarding_checklist_division" class="mdb-main-label">Division:</label>
					                    <select class="form-control" id="onboarding_checklist_division" rel="section">
					                    </select>
				                    </div>
				                    <div class="col-sm-2">
										<label for="onboarding_checklist_section" class="mdb-main-label">Section:</label>
					                    <select class="form-control" id="onboarding_checklist_section" rel="practice">

					                    </select>
				                    </div>
				                    <div class="col-sm-2">
										<label for="onboarding_checklist_practice" class="mdb-main-label">Practice:</label>
					                    <select class="form-control" id="onboarding_checklist_practice">


					                    </select>
				                    </div>
			                    </div>
		                    </div>
			                <div class="col-sm-2">
								<br/>
				                <button type="button" class="btn btn-primary " id="search_checklist_report">Search</button>
				                <button type="button" class="btn btn-danger " id="reset_checklist_report">Reset</button>
			                </div>
		                </div>
	                </div>

                </div>
				<div class="card mt-4">
	                <div class="card-body">
						<div id="post_onboard_checklist_loader">
		                    <h2><center>Loading...</center></h2>
		                </div>
		                <div id="post_onboard_checklist_no_record" class="o_hidden">
		                    <h2><center>No records found...</center></h2>
		                </div>
		                <table class="table table-hover table-bordered" id="post_onboard_checklist">

	                    </table>
	                </div>
                </div>
            </div>
        </div>
	</t>
</templates>
