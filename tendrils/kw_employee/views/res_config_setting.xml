                            <div class="o_setting_right_pane">
                                <label for="emp_creation_inform_ids"/>
                                <div class="text-muted">
                                    Employee Creation Inform
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="emp_creation_inform_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
