<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- All Employee Act Window -->

        <record model="ir.actions.act_window" id="kwemp_all_action_window">
            <field name="name">All Details</field>
            <field name="res_model">kwemp_all</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- All Employee Form View -->
        <record model="ir.ui.view" id="kwemp_all_details">
            <field name="name">All Details Form</field>
            <field name="model">kwemp_all</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="HR Settings">
                            <group>
                                <field name="emp_code"/>
                                <field name="emp_grade"/>
                                <field name="date_of_joining"/>
                                <field name="date_of_completed_probation"/>
                                <field name="confirmation_sts"/>
                                <!-- <field name="system_configuration"/> -->
                            </group>
                            <group>
                                <field name="id_card_no"/>
                                <field name="csm_email_id"/>
                                <field name="emp_role"/>
                                <field name="emp_category"/>
                                <field name="employement_type"/>
                                <field name="biometric_id"/>
                                <field name="outlook_pwd"/>
                                <field name="epbx_no"/>
                            </group>
                        </group>

                        <group string="Personal Informations">
                            <field name="emp_religion"/>
                            <field name="emp_refered_from"/>
                            <field name="emp_refered_detail"/>
                            <field name="wedding_anniversary"/>
                            <field name="known_language_ids"/>
                        </group>

                        <group string="Work Experience Details">
                            <field name="experience_sts"/>
                            <field name="worked_country_ids" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="work_experience_ids"/>
                            <field name="technical_skill_ids"/>
                        </group>

                        <group string="Educational Details">
                            <field name="educational_details_ids"/>
                        </group>

                        <group string="Identification Details">
                            <field name="blood_group"/>
                            <field name="identification_ids"/>
                            <field name="membership_assc_ids"/>
                        </group>
                        <group string="Family Details">
                            <field name="family_details_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Menu Item For All Informations -->
        <menuitem name="Tendrils Users" id="kwemployee_all_info" parent="hr.menu_hr_root" sequence="4" action="kwemp_all_action_window"/>

    </data>
</odoo>