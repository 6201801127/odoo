<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.actions.act_window" id="kwemp_work_location_window_action">
			<field name="name">Work Locations</field>
			<field name="res_model">kwemp_work_location</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.ui.view" id="kwemp_work_location_view_tree">
			<field name="name">Work Locations tree</field>
			<field name="model">kwemp_work_location</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="kwemp_work_location_view_form" model="ir.ui.view">
			<field name="name">Work Location Form</field>
			<field name="model">kwemp_work_location</field>
			<field name="arch" type="xml">
				<form string="Work Location">
					<sheet>
						<group>
							<group>
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<menuitem name="Locations"
		          id="kwemp_work_location_menu"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_work_location_window_action"/>
	</data>
</odoo>
