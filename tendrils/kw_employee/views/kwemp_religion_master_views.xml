<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_religion_master_search_view" model="ir.ui.view">
			<field name="name">kwemp_religion_master_search_view</field>
			<field name="model">kwemp_religion_master</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Blood Groups">
					<field name="name" string="Religions"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_religions"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_religions"/>
				</search>
			</field>
		</record>

		<!--START: explicit religion Action window definition -->
		<record model="ir.actions.act_window" id="kwemp_religion_list_view">
			<field name="name">Religions</field>
			<field name="res_model">kwemp_religion_master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_religion_master_search_view"/>
		</record>
		<!--END: explicit religion Action window definition -->

		<!--START:  explicit religion tree view definition -->
		<record model="ir.ui.view" id="kwemp_religion_list_view_tree">
			<field name="name">Religions Tree</field>
			<field name="model">kwemp_religion_master</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!--END:  explicit religion tree view definition -->

		<!--START:  explicit religion form view definition -->
		<record id="kwemp_religion_view_form" model="ir.ui.view">
			<field name="name">Religion Form</field>
			<field name="model">kwemp_religion_master</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--END:  explicit religion form view definition -->

		<!--START:  explicit religion action menu item definition -->
		<menuitem name="Religions"
		          id="kwemp_religion_view"
		          parent="kwemp_user_configuration_submenu"
		          action="kwemp_religion_list_view"
		          groups="hr.group_hr_manager"/>
		<!--END:  explicit religion action menu item definition -->
	</data>
</odoo>
