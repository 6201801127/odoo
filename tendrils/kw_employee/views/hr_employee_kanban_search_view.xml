<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr_kanban_view_employees_search_panel" model="ir.ui.view">
			<field name="name">hr.employee.view.kanban.inherit</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
			<field name="arch" type="xml">
				<xpath expr="//templates">
					<searchpanel>
						<field name="department_id" disable_counters="true" icon="fa-sitemap"/>
					</searchpanel>
				</xpath>
			</field>
		</record>

		<record id="resource_kanban_view_employees_search_panel" model="ir.ui.view">
			<field name="name">Resource searchpanel</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="kw_employee.kw_resource_kanban_view"/>
			<field name="arch" type="xml">
				<xpath expr="//templates">
					<searchpanel>
						<field name="primary_skill_id" select="multi" icon="fa-sitemap"/>
						<field name="skill_id" select="multi" icon="fa-sitemap"/>
					</searchpanel>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
