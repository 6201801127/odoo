<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_course_setting_window">
			<field name="name">Course Settings</field>
			<field name="res_model">kw_course_setting</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- actions views Ending-->

		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kwemp_course_setting_tree_view">
			<field name="name">Course Settings Tree</field>
			<field name="model">kw_course_setting</field>
			<!--field name="inherit_id" ref="hr.view_employee_form"/-->
			<field name="arch" type="xml">
				<tree>
					<field name="course_id"/>
					<field name="child_id"/>
					<field name="diff_year"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record model="ir.ui.view" id="kwemp_course_setting_form_view">
			<field name="name">Course Settings Form</field>
			<field name="model">kw_course_setting</field>

			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="course_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name="child_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name="diff_year"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<menuitem name="Course Settings"
                  id="kwemp_course_setting_preview1"
		          parent="hr.menu_human_resources_configuration"
                  action="kwemp_course_setting_window"
		          groups="hr.group_hr_manager"/>
		<!-- actions opening views on models -->
		<!-- This Menu Item must have a parent and an action -->
	</data>
</odoo>
