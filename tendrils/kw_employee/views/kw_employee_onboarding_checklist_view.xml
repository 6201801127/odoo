<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <!-- explicit tree view definition Opening -->
        <record id="kw_employee_onboarding_checklist_view_tree" model="ir.ui.view">
            <field name="name">Onboarding Checklist Tree</field>
            <field name="model">kw_employee_onboarding_checklist</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="employee_id"/>
                    <field name="department"/>
                    <field name="joining_kit"/>
                    <field name="doc_collection"/>
                    <field name="kw_profile_update"/>
                    <field name="hard_copy_verification"/>
                    <field name="kw_id_generation"/>
                    <field name="email_id_creation"/>
                    <field name="telephone_extention"/>
                    <field name="health_insurance"/>
                    <field name="esi"/>
                    <field name="gratuity"/>
                    <field name="pf"/>
                    <field name="accident_policy"/>
                    <field name="work_station"/>
                    <field name="hr_induction"/>
                    <field name="jd"/>
                    <field name="bond_formality"/>
                    <field name="appointment_letter"/>
                    <field name="id_card"/>
                    <field name="criminal_record_verification"/>
                    <field name="background_verification"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <!-- explicit form view definition Opening -->
        <record id="kw_employee_onboarding_checklist_view_form" model="ir.ui.view">
            <field name="name">Onboarding Checklist Form</field>
            <field name="model">kw_employee_onboarding_checklist</field>
            <field name="arch" type="xml">
                <form string="Onboarding Checklist" create="false" delete="false">
                    <script>
                        $(document).ready(function(){ 
                            status =  $("[aria-pressed=true]").text().trim();
                            if ( status === 'Completed'){
                                $('.o_form_button_edit').hide();
                            }
                        });
                    </script>
                    <header>
                        <field name="status" widget="statusbar" />
                    </header>
                    <div id="o_employee_container">
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image&quot;}" readonly="1"/>
                        <div class="oe_title">
                            <h1>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1"/>
                            </h1>
                            <h3>
                                <field name="designation_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly="1"/>
                            </h3>
                        </div>
                    </div>
                    <group name="group_1">
                        <div class="content-group">
                            <div class="row">
                                <label for="joining_kit" class="font-weight-bold col-md-2"/>
                                <span><field name="joining_kit" widget="radio" options="{'horizontal': true}"/></span>
                                <label for="hr_induction" class="font-weight-bold col-md-2" style="margin-left: 25%;"/>
                                <span><field name="hr_induction" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label for="hard_copy_verification" class="font-weight-bold col-md-2" />
                                <span><field name="hard_copy_verification" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="jd" style="margin-left: 25%;"/>
                                <span><field name="jd" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="kw_profile_update"/>
                                <span><field name="kw_profile_update" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="bond_formality" style="margin-left: 25%;"/>
                                <span><field name="bond_formality" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="kw_id_generation"/>
                                <span><field name="kw_id_generation" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="appointment_letter" style="margin-left: 25%;"/>
                                <span><field name="appointment_letter" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="email_id_creation"/>
                                <span><field name="email_id_creation" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="id_card" style="margin-left: 25%;"/>
                                <span><field name="id_card" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="telephone_extention"/>
                                <span><field name="telephone_extention" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="criminal_record_verification" style="margin-left: 25%;"/>
                                <span><field name="criminal_record_verification" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="pf"/>
                                <span><field name="pf" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="background_verification" style="margin-left: 25%;"/>
                                <span><field name="background_verification" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="esi"/>
                                <span><field name="esi" widget="radio" options="{'horizontal': true}"/></span>
                                <label class="font-weight-bold col-md-2"  for="doc_collection" style="margin-left: 25%;"/>
                                <span><field name="doc_collection" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                            <div class="row">
                                <label class="font-weight-bold col-md-2"  for="gratuity"/>
                                <span><field name="gratuity" widget="radio" options="{'horizontal': true}"/></span>
                            </div>
                        </div>
                    </group>
                    
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->

