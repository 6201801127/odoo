        <record id="view_postonboarding_checklist_pivot" model="ir.ui.view">
            <field name="name">post_onboarding_checklist_pivot</field>
            <field name="model">kw_employee_onboarding_checklist</field>
            <field name="arch" type="xml">
                <pivot string="Post Onboarding Checklist">
                   <field name="employee_id" type="col"/>
                   <field name="joining_kit" string="Joining Kit" type="row"/>
                </pivot>
            </field>
        </record>


        <!-- actions views Opening-->
        <record id="kw_employee_onboarding_checklist_action" model="ir.actions.act_window">
            <field name="name">Onboarding Checklist</field>
            <field name="res_model">kw_employee_onboarding_checklist</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
