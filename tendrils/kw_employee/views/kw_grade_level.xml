<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- model.name form view -->
		<record id="kw_grade_level_view_form" model="ir.ui.view">
			<field name="name">Grade level Form</field>
			<field name="model">kw_grade_level</field>
			<field name="arch" type="xml">
				<form string="Grade level">
					<sheet>
						<group>
							<!-- Add your fields here -->
							<field name="name" required='1'/>
							<field name="grade_ids" widget="many2many_tags" options="{'no_create':True,'no_edit':True}" required='1'/>
							<field name="parent_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
							<field name="prof_persuit" />
							<field name="lta"/>
							<!-- <field name="status" widget="boolean_toggle"/> -->
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- model.name tree view -->
		<record id="kw_grade_level_view_tree" model="ir.ui.view">
			<field name="name">Grade level Tree</field>
			<field name="model">kw_grade_level</field>
			<field name="arch" type="xml">
				<tree>
					<!-- Add your fields here -->
					<field name="name"/>
					<field name="grade_ids" widget="many2many_tags"/>
					<field name="parent_id"/>
					<field name="prof_persuit" widget="monetary"/>
					<field name="lta" widget="monetary"/>
					<field name="status" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>

		<!-- search view -->
		<record id="kw_grade_level_search_view" model="ir.ui.view">
			<field name="name">kw_grade_level_search_view</field>
			<field name="model">kw_grade_level</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Grade level">
					<field name="name" string="Grade level"/>
					<field name="grade_ids" widget="many2many_tags"/>
					<field name="parent_id"/>
					<filter string="Active" domain="[('status', '=',True)]" name="enable_status"/>
					<filter string="Inactive" domain="[('status', '=',False)]" name="disable_status"/>
				</search>
			</field>
		</record>

		<!-- kw_grade_level action window -->
		<record id="kw_grade_level_action" model="ir.actions.act_window">
			<field name="name">Grade level</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kw_grade_level</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="search_view_id" ref="kw_grade_level_search_view"/>
		</record>

		<menuitem name="Employee Level"
		          id="kwemp_grade_level_menu"
		          parent="kwemp_organisation_submenu"
		          action="kw_grade_level_action"
		          sequence="40"/>
	</data>
</odoo>
