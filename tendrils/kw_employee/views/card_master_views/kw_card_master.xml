<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_card_master_tree" model="ir.ui.view">
            <field name="name">kw_card_master.tree</field>
            <field name="model">kw_card_master</field>
            <field name="arch" type="xml">
                <tree string="Card Master">
                    <field name="name"/>
                    <field name="card_type"/>
                    <field name="description"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="kw_card_master_form" model="ir.ui.view">
            <field name="name">kw_card_master.form</field>
            <field name="model">kw_card_master</field>
            <field name="arch" type="xml">
                <form string="Card Master">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="card_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="description"/>
                                <!-- <field name="active"/> -->
                                <field name="state" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_card_master_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Card Master</field>
            <field name="res_model">kw_card_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <!-- <menuitem id="root_menu_for_card_act" name="Manage Card" parent="hr.menu_hr_root"  sequence="101" groups="kw_employee.group_kw_card_master_admin"/>
        <menuitem name="Card Master" id="card_master_menu_for_admin" parent="root_menu_for_card_act" action="kw_card_master_action" sequence="1" groups="kw_employee.group_kw_card_master_admin"/> -->
        <menuitem name="Manage Card"
				  id="manage_card"
				  parent="kw_onboarding.kwonboard_onboard_parent_menu"
				  sequence="10"
                  groups="kw_onboarding.group_kw_onboarding_admin,kw_employee.group_kw_card_master_admin"/>
        <!-- <menuitem id="kwonboard_card_master_menu" name="Card Master" action='kw_card_master_action' parent="manage_card" groups="kw_onboarding.group_kw_onboarding_admin" sequence="1"/> -->
        <!-- <menuitem name="Card Master" id="kw_card_master_menu" parent="kw_employee.kw_master_menu" action="kw_card_master_action" sequence="99"  groups="kw_employee.group_kw_card_master_admin,hr.group_hr_manager"/> -->


        <record id="kw_employee.kw_master_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('kw_employee.group_kw_card_master_admin'))]"/>
        </record>


    </data>
</odoo>