<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- model.name form view -->
		<record id="kw_release_card_view" model="ir.ui.view">
			<field name="name">Release Card Form</field>
			<field name="model">kw_card_master</field>
			<field name="priority" eval="50"/>
			<field name="arch" type="xml">
				<form create='false' edit='false'>
					<div class="row">
						<div class="col-sm-12 mx-auto">
							<p class="h6 font-weight-light text-left text-justify">
								Are you sure to release card?
							</p>
						</div>
					</div>
					<footer>
						<button type="object" name="release_card" class="text-center btn btn-primary"
						        style="margin-right:10px; width:70px;">Ok
						</button>
						<button string="Cancel" class="btn-danger" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
		<record id="release_card_action" model="ir.actions.act_window">
			<field name="name">Release Card</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kw_card_master</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
		</record>

		<record id="action_card_release_form" model="ir.actions.act_window.view">
			<field eval="1" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="kw_release_card_view"/>
			<field name="act_window_id" ref="release_card_action"/>
		</record>
	</data>
</odoo>
