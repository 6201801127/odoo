<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_assigned_card_form" model="ir.ui.view">
            <field name="name">kw_assigned_card.form</field>
            <field name="model">kw_assigned_card</field>
            <field name="arch" type="xml">
                <form string="Assigned Card">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_open': True, 'no_create': True}"
                                       attrs="{'readonly': [('compute_card', '!=', False)]}"/>
                                <field name="emp_code" readonly="1"/>
                                <field name="designation_id" readonly="1"/>
                                <field name="compute_card" attrs="{'invisible': [('old_card_no', '=', False)]}"/>
                                <field name="card_number" options="{'no_open': True, 'no_create': True}"/>
                                <field name="old_card_no" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="save_wizard_data" string="Reassign" type="object" class="btn-primary"
                                confirm="Are you sure to Assign/Reassign Card ?"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="kw_assigned_card_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Assigned Card</field>
            <field name="res_model">kw_assigned_card</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
        <!-- <menuitem name="Assigned Card" id="kw_assigned_card_menu" parent="hr.menu_human_resources_configuration" action="kw_assigned_card_action" sequence="993"/>  -->
    </data>
</odoo>