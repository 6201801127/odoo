<odoo>
    <data>
        <!-- hr.employee form view -->
        <record id="kw_emp_archieve_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">kw_emp_archieve</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                           <field name="last_working_day" required="1"/>
                           <field name="reason" required="1"/> 
                        </group>
                        <footer>
                        <center>
                            <button name="button_confirm" type="object" string="Confirm" class="oe_highlight" confirm="Are you sure to Archive the employee?"/>
                        </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- hr_employee action window -->
        <record id="kw_emp_archieve_action" model="ir.actions.act_window">
            <field name="name">kw_emp_archieve.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_emp_archieve</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_emp_archieve_view_form')})]"/>
        </record>
    </data>
</odoo>