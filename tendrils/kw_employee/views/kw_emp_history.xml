<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kwemp_emp_history_master_list">
			<field name="name">Employee History</field>
			<field name="model">kw_emp_history</field>
			<field name="arch" type="xml">
				<tree create='false' edit='false'>
					<field name="start_date"/>
					<field name="emp_code"/>
					<field name="emp_id"/>
					<field name="dept_id"/>
					<field name="division"/>
					<field name="section"/>
					<field name="practice"/>
					<field name="deg_ig"/>
					<field name="name"/>
					<!-- <field name="job_location_city"/> -->
					<field name="work_location_id" string="Job Location"/>
					<field name="office_type" string="Base Location"/>
					<field name="end_date"/>
					<field name="duration"/>
				</tree>
			</field>
		</record>

		<record id="kwemp_emp_history_search" model="ir.ui.view">
			<field name="model">kw_emp_history</field>
			<!-- <field name="inherit_id" ref="hr.view_employee_filter"/> -->
			<field name="arch" type="xml">
				<search>
					<field name="emp_code"/>
					<field name="emp_id"/>
					<field name="dept_id"/>
					<field name="deg_ig"/>
					<field name="name"/>
					<!-- <field name="job_location_city"/> -->
					<field name="work_location_id" string="Job Location"/>
					<field name="office_type" string="Base Location"/>
					<field name="start_date"/>
					<field name="end_date"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="kwemp_emp_history_action_window">
			<field name="name">Employee History</field>
			<field name="res_model">kw_emp_history</field>
			<field name="view_mode">tree</field>
		</record>
		<!-- actions views Ending-->

		<menuitem id="kw_emp_history_menu"
		          parent="hr.menu_human_resources_configuration"
		          action="kwemp_emp_history_action_window"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
