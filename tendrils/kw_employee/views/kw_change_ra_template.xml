<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="new_change_ra_email_template" model="mail.template">
            <field name="name">Change of Reporting Authority</field>
            <field name="model_id" ref="kw_employee.model_kw_change_ra_log"/>
            <field name="subject">Change of Reporting Authority | ${object.emp_name.name}</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${ctx['email']}</field>
            <field name="email_cc">${ctx['email_cc1']}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            	<![CDATA[
					<table border="0">
						<tr>
							<td>
								<div style="margin-left: 1.2rem;"> 
									<h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#000000;">
									    <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Hello</small>
									     ${object.emp_name.name},
                                     </h5>
									<p style="color: #000000;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
									    This is to inform you that your Reporting Authority is changed
									    to <b>${object.new_ra_id.display_name}</b> effective from
									    <b>${format_tz(object.write_date, format='%d-%b-%Y')}</b>.
									    Henceforth, ${object.new_ra_gender} would be responsible for all your approvals and sanctions.
									</p>
									<br/>
								</div>
							</td>
						</tr>
					</table> 
                ]]> 
            </field>
            <!-- <field name="auto_delete" eval="False"/> -->
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>

                    
