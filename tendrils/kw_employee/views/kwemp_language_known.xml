<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_language_master_search_view" model="ir.ui.view">
			<field name="name">kwemp_language_master_search_view</field>
			<field name="model">kwemp_employment_type</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Employment Types">
					<field name="name" string="Employment Types"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_language_known"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_language_known"/>
				</search>
			</field>
		</record>

		<!-- actions views Opening-->
		<record id="kwemp_language_known_action" model="ir.actions.act_window">
			<field name="name">Language Known</field>
			<field name="res_model">kwemp_language_master</field>
			<!-- <field name="priority">1</field> -->
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_language_master_search_view"/>
		</record>
		<!-- actions views Ending-->

		<!-- explicit tree view definition Opening -->
		<record id="kwemp_language_known_view_tree" model="ir.ui.view">
			<field name="name">Languages Known Tree</field>
			<field name="model">kwemp_language_master</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record id="kwemp_language_known_view_form" model="ir.ui.view">
			<field name="name">Languages Known Form</field>
			<field name="model">kwemp_language_master</field>
			<field name="arch" type="xml">
				<form string="Languages Known">
					<group>
						<field name="name"/>
					</group>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<menuitem name="Language Known"
                  id="kwemp_language_known_menu"
                  parent="kwemp_user_configuration_submenu"
		          action="kwemp_language_known_action"
                  sequence="14"
                  groups="hr.group_hr_manager"/>
	</data>
</odoo>
