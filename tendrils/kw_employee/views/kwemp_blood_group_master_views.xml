<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_blood_group_master_search_view" model="ir.ui.view">
			<field name="name">kwemp_blood_group_master_search_view</field>
			<field name="model">kwemp_blood_group_master</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Blood Groups">
					<field name="name" string="Blood Groups"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_blood_group"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_blood_group"/>
				</search>
			</field>
		</record>


		<record model="ir.actions.act_window" id="kwemp_blood_group_window_action">
			<field name="name">View Blood Groups</field>
			<field name="res_model">kwemp_blood_group_master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_blood_group_master_search_view"/>
		</record>

		<record model="ir.ui.view" id="kwemp_blood_group_master_view_tree">
			<field name="name">Blood Groups Tree</field>
			<field name="model">kwemp_blood_group_master</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="kw_id"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>

		<record id="kwemp_blood_group_master_view_form" model="ir.ui.view">
			<field name="name">Blood Group Form</field>
			<field name="model">kwemp_blood_group_master</field>
			<field name="arch" type="xml">
				<form string="Blood Group">
					<sheet>
						<group>
							<group>
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<menuitem name="Blood Group"
		          id="kwemp_blood_group_menu"
		          parent="kwemp_user_configuration_submenu"
		          action="kwemp_blood_group_window_action"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
