<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">


        <record id="hr_employee_form_inherited" model="ir.ui.view">
            <field name="name">Inherited Hr employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div/button[@name='toggle_active']" position="replace">
                    <button name="toggle_active" type="object"
                            groups="hr.group_hr_user"
                            class="oe_stat_button"
                            icon="fa-archive"
                            confirm="Are you sure to Archive the employee?">
                        <field name="active"
                               widget="boolean_button"
                               options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                    </button>

                    <button class="oe_stat_button text-center"
                            icon="fa-tasks"
                            type="object"
                            name="view_onboarding_checklist"
                            groups="hr.group_hr_manager">
                        <span class="o_stat_text font-weight-bold">
                            Onboarding Checklist
                        </span>
                    </button>

                    <button class="oe_stat_button text-center"
                            icon="fa-lock"
                            type="object" attrs="{'invisible': [('user_id', '=', False)]}"
                            name="action_employee_permissions"
                            groups="kw_employee.group_payroll_manager">
                        <span class="o_stat_text font-weight-bold">
                            Permissions
                        </span>
                    </button>
                        
                </xpath>
                <field name="department_id" position="attributes">
                    <attribute name="domain">[('dept_type.code', '=', 'department')]</attribute>
                    <attribute name="options">{'no_open': True,'no_create':True,'no_edit':True}</attribute>
                </field>
                <field name="department_id" position="after">
                    <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('department_id', '=', False)]}"/>
                    <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs= "{'invisible': [('division', '=', False)]}"/>
                    <field name="practise" options="{'no_open': True,'no_create':True,'no_edit':True}"  attrs= "{'invisible': [('section', '=', False)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
