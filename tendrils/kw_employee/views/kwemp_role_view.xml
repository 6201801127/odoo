<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwmaster_role_name_search_view" model="ir.ui.view">
			<field name="name">kwmaster_role_name_search_view</field>
			<field name="model">kwmaster_role_name</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Employee Roles">
					<field name="name" string="Employee Roles"/>
					<field name="code" string="Code" groups="base.group_no_one"/>
					<field name="category_ids" string="Employee Category" widget="many2many_tags"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_kwmaster_role_name"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_kwmaster_role_name"/>
				</search>
			</field>
		</record>

		<!--START: explicit employee role Action window definition -->
		<record id="kwemp_work_role_action" model="ir.actions.act_window">
			<field name="name">Employee Roles</field>
			<field name="res_model">kwmaster_role_name</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwmaster_role_name_search_view"/>
		</record>
		<!--END: explicit employee role Action window definition -->

		<!--START: Role form view -->
		<record id="kwemp_work_role_form_view" model="ir.ui.view">
			<field name="name">Employee Role Form</field>
			<field name="model">kwmaster_role_name</field>
			<field name="arch" type="xml">
				<form string="Category Form">
					<sheet>
						<group>
							<group string="Employee Role">
								<field name="name" string="Role"/>
								<field name="code"/>
								<field name="budget_type" string="Budget Type" />
								<field name="category_ids" string="Category">
									<tree editable="top" default_order="name asc">
										<field name="name"/>
										<field name="kw_id" groups="base.group_no_one"/>
									</tree>
								</field>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--END: Role form view -->

		<!--START: Role Tree view -->
		<record id="kwemp_work_role_tree_view" model="ir.ui.view">
			<field name="name">Employee Role Tree</field>
			<field name="model">kwmaster_role_name</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" string="Name"/>
					<field name="code" string="Code" groups="base.group_no_one"/>
					<field name="category_ids" string="Employee Category" widget="many2many_tags"/>
					<field name="budget_type" string="Budget Type" />
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>
		<!--END: Role Tree view -->

		<!--START: category action view -->
		<record id="kwemp_work_category_action" model="ir.actions.act_window">
			<field name="name">Employee Categories</field>
			<field name="res_model">kwmaster_category_name</field>

			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!--END: category action view -->

		<!--START: category form view -->
		<record id="kwemp_work_category_form_view" model="ir.ui.view">
			<field name="name">Employee Category Form</field>
			<field name="model">kwmaster_category_name</field>
			<field name="arch" type="xml">
				<form string="Category Form">
					<sheet>
						<group>
							<group string="Employee Category">
								<field name="name" string="Employee Category"/>
								<field name="role_ids" string="Employee Role"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--END: category form view -->

		<!--START: category Tree view -->
		<record id="kwemp_work_category_tree_view" model="ir.ui.view">
			<field name="name">Employee Category Tree</field>
			<field name="model">kwmaster_category_name</field>
			<field name="arch" type="xml">
				<tree create="true" delete="true" editable="top">
					<field name="name" string="Name"/>
					<!--  <field name="role_ids" string="Employee Role"/> -->
				</tree>
			</field>
		</record>
		<!--END: category Tree view -->

		<menuitem name="Employee Roles"
		          id="kwemp_work_role_menu"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_work_role_action"
		          sequence="12"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
