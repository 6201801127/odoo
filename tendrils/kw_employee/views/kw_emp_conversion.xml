<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- hr.employee form view -->
		<record id="kw_emp_conversion_view_form" model="ir.ui.view">
			<field name="name">kw_emp_conversion.view.form</field>
			<field name="model">kw_emp_conversion</field>
			<field name="arch" type="xml">
				<form string="">
					<sheet>
						<group>
							<field name="search_by" widget="radio" options="{'horizontal': true}"/>
							<field name="employee_id"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="kw_emp_conversion_action" model="ir.actions.server">
			<field name="name">Change Employee Type</field>
			<field name="model_id" ref="model_kw_emp_conversion"/>
			<field name="state">code</field>
			<field name="code">
				action = model.view_form()
			</field>
		</record>
		<menuitem name="Change Employee Type"
		          id="employee_conversion"
		          parent="hr.menu_human_resources_configuration"
		          action="kw_emp_conversion_action"
		          sequence="100"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
