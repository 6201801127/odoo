<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kwemp_grade_master_list">
			<field name="name">Organization Grade Tree</field>
			<field name="model">kwemp_grade_master</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="description"/>
					<field name="has_band" widget="boolean_toggle" groups="base.group_no_one"/>
					<field name="send_consolidated_mail" widget="boolean_toggle" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->
		<record id="kwemp_grade_master_form" model="ir.ui.view">
			<field name="name">Organization Band Form</field>
			<field name="model">kwemp_grade_master</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Organization Band">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="description"/>
								<field name="has_band" widget="boolean_toggle"/>
								<field name="send_consolidated_mail" widget="boolean_toggle" groups="base.group_no_one"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- search view -->
		<record id="kwemp_grade_master_search_view" model="ir.ui.view">
			<field name="name">kwemp_grade_master_search_view</field>
			<field name="model">kwemp_grade_master</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Organization Grade">
					<field name="name" string="Organization Grade"/>
					<filter string="Has Band Enable" domain="[('has_band', '=',True)]" name="enable_has_band"/>
					<filter string="Has Band Disable" domain="[('has_band', '=',False)]" name="disable_has_band"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_organization_grade"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_organization_grade"/>
				</search>
			</field>
		</record>

		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_grade_master_action_window">
			<field name="name">Organization Grade</field>
			<field name="res_model">kwemp_grade_master</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_grade_master_search_view"/>
		</record>
		<!-- actions views Ending-->

		<menuitem id="kwemp_grade_master_menu"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_grade_master_action_window"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
