<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="res_country_search_view" model="ir.ui.view">
			<field name="name">res_country_search_view</field>
			<field name="model">res.country</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Employee Roles">
					<field name="name" string="Country Name"/>
					<field name="code" string="Code" groups="base.group_no_one"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_country"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_country"/>
				</search>
			</field>
		</record>

		<record id="view_country_tree" model="ir.ui.view">
			<field name="name">res.country.tree</field>
			<field name="model">res.country</field>
			<field name="inherit_id" ref="base.view_country_tree"/>
			<field name="arch" type="xml">
				<xpath expr="/tree/field[@name='code']" position="after">
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</xpath>
			</field>
		</record>
		<record id="view_country_form" model="ir.ui.view">
			<field name="name">res.country.form</field>
			<field name="model">res.country</field>
			<field name="inherit_id" ref="base.view_country_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat_label']" position="after">
					<field name="kw_id" groups="base.group_no_one"/>
				</xpath>
			</field>
		</record>
		<!-- <record id="view_country_tree" model="ir.ui.view">
		   <field name="name">res.country.tree</field>
		   <field name="model">res.country</field>
		   <field name="arch" type="xml">
			   <tree editable="bottom">
				   <field name="kw_id"/>
			   </tree>
		   </field>
	   </record> -->
		<record id="action_country" model="ir.actions.act_window">
			<field name="name">Countries</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.country</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="res_country_search_view"/>
		</record>
		<menuitem name="Country"
		          id="action_country_menu"
		          parent="kwemp_organisation_submenu"
		          action="action_country"
		          sequence="13"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
