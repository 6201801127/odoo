<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="checklist_scheduler_email_template" model="mail.template">
            <field name="name">checklist scheduler mail</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Post-Onboarding Checklist : ${ctx['subject']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="model_kw_employee_onboarding_checklist"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[

            <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${ctx['email_name']}</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">${ctx['subject']} for Employees:</p>
                            <br/>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                    <tr>
                                        <td><strong><u>Employee Code</u></strong></td>
                                        <td><strong><u>Employee Name</u></strong></td>
                                        <td><strong><u>Designation</u></strong></td>
                                    </tr>   

                                    % for row in ctx.get('emp_list'):
                                        <tr>
                                            <td><strong> ${row.split(':')[0]}</strong></td>
                                            <td><strong> ${row.split(':')[1]}</strong></td>
                                            <td><strong> ${row.split(':')[2]}</strong></td>
                                        </tr>
                                    %endfor
                                </tbody>
                            </table>
                            <br/><br/>
                          
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Thanks & regards <br/>
                                CSM Technologies Pvt. Ltd.
                            </p>
                            <br/>
                            <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p>
                        </div>
                    </td>
                </tr>
            </table>
                ]]>
               
            </field>

        </record>
    </data>
</odoo>
