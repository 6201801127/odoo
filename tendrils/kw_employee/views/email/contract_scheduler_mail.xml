<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="contract_email_template" model="mail.template">
          <field name="name">Contract email template</field>
          <field name="email_from">tendrils@csm.tech</field>
          <field name="subject">Contract closure reminder</field>
          <field name="email_to">${ctx['email_to']}</field>
          <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
          <field name="model_id" ref="kw_employee.model_hr_employee"/>
          <field name="auto_delete" eval="False"/>
          <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                    <tr>
                        <td>
                            <div style="margin-left: 1.2rem;"> 
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                    <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                    All,
                                </h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    The contract of the following employees tagged to different projects is going to be expired soon :
                                </p>
                              
                                <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem; ">
                                    <tr>
                                        <th style="height: 30px;padding-left:5px; font-weight:700;color:#676767;text-align:left;"> Code </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Name </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Designation </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Department </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Division </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Section </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Practice </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Project </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Contract Start Date </th>
                                        <th style="height: 30px;padding-left:5px;font-weight:700;color:#676767;text-align:left;"> Contract End Date </th>
                                    </tr>
                                    % for row in ctx['emp_list']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:10%;" >
                                                ${row.split(':')[0]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[1]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[2]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[3]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[4]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[5]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[6]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[7]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[8]}
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:25%;">
                                                ${row.split(':')[9]}
                                            </td>
                                        </tr>
                                    % endfor
                                </table>
                                    <br/>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    This is for your kind information and necessary action.
                                    <br/><br/>
                                    Thanks & regards
                                    <br/>
                                    CSM Technologies Pvt. Ltd.
                                    <br/>
                                </p>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> This is a system generated mail. Please do not reply to this mail.</p>
                            </div>
                        </td>
                    </tr>                
                </table> 
                ]]>   
               
            </field>

       </record>
    </data>
</odoo>
