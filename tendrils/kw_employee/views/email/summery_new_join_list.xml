<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="new_employee_email_template" model="mail.template">
        <field name="name">Employee New email template</field>
        <field name="email_from">tendrils@csm.tech</field>
        <field name="subject">Welcome New Employees | ${ctx['date']}</field>
        <field name="email_to">${ctx['email_to']}</field>
        <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
        <field name="model_id" ref="kw_employee.model_kw_employee_onboarding_checklist"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html">
            <![CDATA[
            <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>
                        <div style="margin-left: 1.2rem;"> 
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                All,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                               Please welcome the new employees who has joined us on ${ctx['date']}.
                            </p>
                            
                            <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem; ">
                                <thead>
                                   <tr>
                                        <th scope="col" class="col-sm-2"> Sl. No</th>
                                        <th scope="col" class="col-sm-1"> Location</th>
                                        <th scope="col" class="col-sm-2"> Department</th>
                                        <th scope="col" class="col-sm-2"> Division</th>
                                        <th scope="col" class="col-sm-1"> Section</th>
                                        <th scope="col" class="col-sm-1"> Pratice</th>
                                        <th scope="col" class="col-sm-1"> Emp Code</th>
                                        <th scope="col" class="col-sm-1"> Name</th>
                                        <th scope="col" class="col-sm-1"> Designation</th>
                                        <th scope="col" class="col-sm-1"> Reporting Authority</th>
                                    </tr>
                                </thead>
                                    % for row in ctx['emp_list']:
                                    <tr>
                                        <td>${loop.index}</td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.branch:
                                                ${row.branch}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.department:
                                                ${row.department}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.division:
                                                ${row.division}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.section:
                                                ${row.section}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.pratice:
                                                ${row.pratice}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.code:
                                                ${row.code}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.name:
                                                ${row.name}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.job_position:
                                                ${row.job_position}
                                            % endif
                                        </td>
                                        <td style="color:#676767;height: 34px;">
                                            % if row.ra:
                                                ${row.ra}
                                            % endif
                                        </td>
                                    </tr>
                                % endfor
                            </table>
                            <br/>
                            <br/>
                            <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p>
                        </div>
                    </td>
                </tr>
            </table>
            ]]> 
        </field>  
    </record>
</odoo>