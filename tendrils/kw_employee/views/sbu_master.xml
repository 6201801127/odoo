<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_sbu_master_tree" model="ir.ui.view">
            <field name="name">kw sbu Master_tree</field>
            <field name="model">kw_sbu_master</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="sequence" widget="handle"/>
                    <field name="type" attrs="{'required':True}"/>
                    <field name="name" attrs="{'required':True}"/>
                    <field name="representative_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                    <field name="employee_id" options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                    <field name="description"/>
                    <field name="display_name" invisible="1"/>
                    <field name="kw_id" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <!-- kw_contract_end_log action window -->
        <record id="kw_sbu_master_action" model="ir.actions.act_window">
            <field name="name">SBU Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_sbu_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="sbu_tagging_menu"
                  name="SBU Master"
                  parent="kw_employee.kw_master_menu"
                  action="kw_sbu_master_action"
                  sequence="999"/>


    </data>
</odoo>