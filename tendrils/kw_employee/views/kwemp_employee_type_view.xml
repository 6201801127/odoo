<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_employment_type_search_view" model="ir.ui.view">
			<field name="name">kwemp_employment_type_search_view</field>
			<field name="model">kwemp_employment_type</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Employment Types">
					<field name="name" string="Employment Types"/>
					<field name="code"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_employment_types"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_employment_types"/>
				</search>
			</field>
		</record>

		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_employee_category_window">
			<field name="name">Employment Types</field>
			<field name="res_model">kwemp_employment_type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_employment_type_search_view"/>
		</record>
		<!-- actions views Ending-->

		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kwemp_employee_category_tree_view">
			<field name="name">Employment Types Tree</field>
			<field name="model">kwemp_employment_type</field>
			<!--field name="inherit_id" ref="hr.view_employee_form"/-->
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="code"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record model="ir.ui.view" id="kwemp_employee_category_form_view">
			<field name="name">Employment Types Form</field>
			<field name="model">kwemp_employment_type</field>
			<!--field name="inherit_id" ref="hr.view_employee_form"/-->
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name" string="Employment Type"/>
								<field name="code" string="Employment Code"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<menuitem name="Employment Types"
		          id="kwemp_employee_category"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_employee_category_window"
		          sequence="14"
		          groups="hr.group_hr_manager"/>
		<!-- actions opening views on models -->
		<!-- This Menu Item must have a parent and an action -->
	</data>
</odoo>
