<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!--START: category form view -->
		<record id="kwemp_category_form_view" model="ir.ui.view">
			<field name="name">Employee Category form</field>
			<field name="model">kwmaster_category_name</field>
			<field name="arch" type="xml">
				<form string="Category Form">
					<sheet>
						<group>
							<group string="Employee Category">
								<field name="role_ids" string="Employee Role"
									   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name="name" string="Employee Category"/>
								<field name="code"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--END: category form view -->

		<!--START: category Tree view -->
		<record id="kwemp_category_tree_view" model="ir.ui.view">
			<field name="name">Employee Category Tree</field>
			<field name="model">kwmaster_category_name</field>
			<field name="arch" type="xml">
				<tree>
					<field name="role_ids" string="Employee Role"/>
					<field name="code" />
					<field name="name" string="Name"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>
		<!--END: category Tree view -->

		<!-- search view -->
		<record id="kwmaster_category_name_search_view" model="ir.ui.view">
			<field name="name">kwmaster_category_name_search_view</field>
			<field name="model">kwmaster_category_name</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Employee Categories">
					<field name="role_ids" string="Employee Role"/>
					<field name="name" string="Name"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_employee_categories"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_employee_categories"/>
				</search>
			</field>
		</record>

		<!--START: category action view -->
		<record id="kwemp_work_category" model="ir.actions.act_window">
			<field name="name">Employee Categories</field>
			<field name="res_model">kwmaster_category_name</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kwemp_category_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kwemp_category_form_view')}),]"/>
			<field name="search_view_id" ref="kwmaster_category_name_search_view"/>
		</record>
		<!--END: category action view -->

		<menuitem name="Employee Category"
		          id="kwemp_category_menu"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_work_category"
		          sequence="99"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
