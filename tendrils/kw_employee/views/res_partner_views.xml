<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--START : res.partner, Add the customized field to existing view  -->
		<record model="ir.ui.view" id="kw_res_partner_form_view">
			<field name="name">res.partner.view.form.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='child_ids']/kanban/templates//div[@class='oe_kanban_details']/field[@name='name']"
				       position="after">
					<!-- <field name="office_prefix"  /> -->
					<div t-if="record.office_prefix.raw_value">Office Prefix :
						<field name="office_prefix"/>
					</div>
				</xpath>

				<xpath expr="//field[@name='child_ids']/form/sheet/field[@name='parent_id']" position="after">
					<div>
						<group>
							<field name="office_prefix" string="Office Prefix for Employee Code" invisible="1"/>
						</group>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>    
