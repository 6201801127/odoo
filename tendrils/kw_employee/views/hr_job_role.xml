<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="hr_job_role_from_view" model="ir.ui.view">
            <field name="name">Job Roles Form</field>
            <field name="model">hr.job.role</field>
            <field name="arch" type="xml">
                <form string="Category Form">
                    <sheet>
                        <group>
                            <field name="name" string="Role Name"/>
                            <field name="designations" widget="many2many_tags" options="{'no_create':True,'no_edit':True}"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_job_role_tree_view" model="ir.ui.view">
            <field name="name">HR Job Role Tree</field>
            <field name="model">hr.job.role</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                    <field name="designations" widget="many2many_tags"/>
                    <field name="description" invisible='0'/>
                </tree>
            </field>
        </record>


        <!-- model.name action window -->
        <record id="hr_job_role_action" model="ir.actions.act_window">
            <field name="name">Job Roles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.job.role</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="hr_job_autonomy_tree_view" model="ir.ui.view">
            <field name="name">Autonomy Tree</field>
            <field name="model">hr_job_autonomy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                    <field name="designations" widget="many2many_tags"/>
                    <field name="description" invisible='0'/>
                </tree>
            </field>
        </record>


        <record id="hr_job_autonomy_from_view" model="ir.ui.view">
            <field name="name">Autonomy Form</field>
            <field name="model">hr_job_autonomy</field>
            <field name="arch" type="xml">
                <form string="Category Form">
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="designations" widget="many2many_tags" options="{'no_create':True,'no_edit':True}"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_job_autonomy_action" model="ir.actions.act_window">
            <field name="name">Autonomy/Authority</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr_job_autonomy</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <menuitem name="Job Roles" id="hr_job_role" parent="kwemp_organisation_submenu" sequence="2"
                  action="hr_job_role_action" groups="hr.group_hr_manager"/>
        <menuitem name="Autonomy" id="hr_job_autonomy" parent="kwemp_organisation_submenu" sequence="17"
                  action="hr_job_autonomy_action" groups="hr.group_hr_manager"/>

        <menuitem name="Job Roles" id="hr_recruitment_job_role" parent="hr_recruitment.menu_hr_recruitment_configuration" sequence="8"
                  action="hr_job_role_action" groups="hr_recruitment.group_hr_recruitment_manager"/>          
    </data>
</odoo>