<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- kwemp_change_ra form view -->
		<record id="kw_change_ra_relation_view_form" model="ir.ui.view">
			<field name="name">kw_change_ra_relation.view.form</field>
			<field name="model">kw_change_ra_relation</field>
			<field name="arch" type="xml">
				<form string="Change RA" create="false">
					<script>
						$(document).ready(function(){
							$('.o_form_button_edit').hide();
							$('.o_form_button_save').hide();
							$('.o_form_button_cancel').hide();
							$('.o_field_x2many_list_row_add').hide();
						});
					</script>
					<sheet string="Existing Reporting Authority">
						<group>
							<field name="display_name" invisible="1"/>
							<field name="search_by" widget="radio" options="{'horizontal': true}"/>
							<field name="reporting_auth_id" options="{'no_open': True,'no_create': True}"/>
							<field name="ra_details_id">
								<tree editable="buttom" delete="false" create="0">
									<!-- <field name="emp_code" readonly="1"/> -->
									<field name="emp_name" string="Employee Name" force_save="1" readonly="1"/>
									<field name="emp_code" readonly="1"/>
									<field name="emp_designation" readonly="1"
									       options="{'no_open': True,'no_create': True}" string="Designation"/>
									<field name="emp_parent" readonly="1" string="Existing RA"
									       options="{'no_open': True,'no_create': True}"/>
									<field name="new_ra_id" options="{'no_open': True,'no_create': True}"/>
									<field name="new_ra_designation"/>
								</tree>
							</field>
						</group>
						<footer>
							<center>
								<button name="change_ra" type="object" string="Change" class="btn btn-success"/>
							</center>
						</footer>
					</sheet>
				</form>
			</field>
		</record>
		<!-- model.name tree view -->

		<!-- kwemp_change_ra action window -->
		<record id="kw_change_ra_relation_action" model="ir.actions.server">
			<field name="name">Change RA</field>
			<field name="model_id" ref="model_kw_change_ra_relation"/>
			<field name="state">code</field>
			<field name="code">
				action = model.view_form()
			</field>
		</record>
		<menuitem name="Change RA"
		          id="change_ra_menu"
		          parent="hr.menu_human_resources_configuration"
		          action="kw_change_ra_relation_action"
		          sequence="99"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
