<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kwemp_grade_list">
			<field name="name">Organization Grade Tree</field>
			<field name="model">kwemp_grade</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" string="Name"/>
					<field name="grade_id"/>
					<field name="band_id"/>
					<field name="description"/>
					<field name="sort_no"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>

		<!-- search view  -->
		<record id="kwemp_grades_master_search_view" model="ir.ui.view">
			<field name="name">kwemp_grade_search_view</field>
			<field name="model">kwemp_grade</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Garde">
					<field name="name" string="Name"/>
					<field name="grade_id"/>
					<field name="band_id"/>
					<field name="sort_no"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_grade"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_grade"/>
				</search>
			</field>
		</record>


		<!-- explicit tree view definition Ending -->
		<record id="kwemp_grade_form" model="ir.ui.view">
			<field name="name">Organization Grade Form</field>
			<field name="model">kwemp_grade</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Organization Band">
					<sheet>
						<group>
							<group>
								<field name="name" string="Name"/>
								<field name="grade_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name="band_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
							</group>
							<group>
								<field name="description"/>
								<field name="sort_no"/>
								<field name="kw_id"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_grade_action_window">
			<field name="name">Organization Grades</field>
			<field name="res_model">kwemp_grade</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_grades_master_search_view"/>
		</record>
		<!-- actions views Ending-->

		<menuitem name="Organization Grades"
		          id="kwemp_grade_menu"
		          parent="kwemp_organisation_submenu"
		          sequence="5"
		          action="kwemp_grade_action_window"
		          groups="base.group_no_one"/>
	</data>
</odoo>
