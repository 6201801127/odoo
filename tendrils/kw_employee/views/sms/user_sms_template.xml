<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="user_sms_template" model="send_sms">
            <field name="name">User_SMS</field>
            <field name="gateway_id" model="gateway_setup" search="[('name','=','Bulksms_Gateway')]"/>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="sms_to">${object.mobile_phone}</field>
            <field name="sms_html">Hello ${object.name}, your user id is created and a link is sent to your email.</field>
        </record>
    </data>
</odoo>