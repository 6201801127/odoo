<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="kw_hr_department_type_tree" model="ir.ui.view">
			<field name="name">kw_hr_department_type.tree</field>
			<field name="model">kw_hr_department_type</field>
			<field name="arch" type="xml">
				<tree string="Department Type">
					<field name="sequence" widget="handle" groups="base.group_no_one"/>
					<field name="complete_name"/>
					<field name="code" groups="base.group_no_one"/>
					<field name="company_id" groups="base.group_no_one"/>
					<field name="branch_id"/>
					<field name="department_id"/>
					<field name='parent_id'/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>

		<record id="kw_hr_department_type_form" model="ir.ui.view">
			<field name="name">kw_hr_department_type.form</field>
			<field name="model">kw_hr_department_type</field>
			<field name="arch" type="xml">
				<form string="Department Type">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="code"/>
								<field name="company_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
								       inivisible="1"/>
								<field name="branch_id"
								options="{'no_open': True,'no_create':True,'no_edit':True}"/>
							</group>
							<group>
								<field name="department_id"
								options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name='parent_id'
								options="{'no_open': True,'no_create':True,'no_edit':True}"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- search view -->
		<record id="kw_hr_department_type_search_view" model="ir.ui.view">
			<field name="name">kw_hr_department_type_search_view</field>
			<field name="model">kw_hr_department_type</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Department Hierarchy">
					<field name="complete_name"/>
					<field name="code" groups="base.group_no_one"/>
					<field name="company_id" groups="base.group_no_one"/>
					<field name="branch_id"/>
					<field name="department_id"/>
					<field name='parent_id'/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_department_hierarchy"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_department_hierarchy"/>
				</search>
			</field>
		</record>

		<record id="kw_hr_department_type_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Department Hierarchy</field>
			<field name="res_model">kw_hr_department_type</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="search_view_id" ref="kw_hr_department_type_search_view"/>
		</record>
		<menuitem name="Department Type"
		          id="kw_hr_department_type_menu"
		          parent="kwemp_organisation_submenu"
		          action="kw_hr_department_type_action"
		          sequence="99"
		          groups="hr.group_hr_manager,base.group_no_one"/>
	</data>
</odoo>
