<odoo>
    <data>
        <record id="employee_details_dashboard_action" model="ir.actions.client">
            <field name="name">Employees Dashboard</field>
            <field name="tag">employee_dashboard</field> <!-- Update the tag to match the JS -->
        </record>
        
        <menuitem parent="hr.menu_hr_root"
                  id="employees_dashboard_menu"
                  name="Employees Dashboard"
                  action="employee_details_dashboard_action"
                  sequence="111"/>
    </data>
    <template id="employee_assets_backend" name="Employee Dashboard assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/kw_employee/static/src/js/employee_dashboard.js"/>
            <link rel="stylesheet" href="/kw_employee/static/src/css/resource_dashboard.css" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
        </xpath>
    </template>
</odoo>
