<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_industry_search_view" model="ir.ui.view">
			<field name="name">kwemp_industry_search_view</field>
			<field name="model">kwemp_industry</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Industry Types">
					<field name="name" string="Industry Types"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_industry_types"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_industry_types"/>
				</search>
			</field>
		</record>

		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_industry_action_window_menu">
			<field name="name">Industry Types</field>
			<field name="res_model">kwemp_industry</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_industry_search_view"/>
		</record>
		<!-- actions views Ending-->

		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kw_emp_industry_tree_view">
			<field name="name">Industry Types Tree</field>
			<field name="model">kwemp_industry</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record id="kw_emp_industry_form_view" model="ir.ui.view">
			<field name="name">Industry Form</field>
			<field name="model">kwemp_industry</field>
			<field name="arch" type="xml">
				<form string="Industry Form">
					<sheet>
						<group name="Industry Type">
							<group string="Industry Type">
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<!--
			 <record id="kwemp_organization_inherit_view" model="ir.ui.view">
					<field name="name">Inherit_catagory</field>
					<field name="model">kwemp_industry</field>
					<field name="inherit_id" ref="kw_employee.kw_emp_industry_form_view" />
					<field name="arch" type="xml">
					  <xpath expr="//sheet//group[@name='industry']" position="inside">

								<group string="Organization">
										<field name="Organization_type" string="Organization Type" />
								</group>
					  </xpath>
					</field>
			</record> -->

		<menuitem name="Industry Type"
		          id="kwemp_industry_type_menu_view"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_industry_action_window_menu"
		          sequence="22"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
