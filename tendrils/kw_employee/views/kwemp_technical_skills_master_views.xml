<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_technical_category_search_view" model="ir.ui.view">
			<field name="name">kwemp_technical_category_search_view</field>
			<field name="model">kwemp_technical_category</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Technical Category">
					<field name="name" string="Technical Category"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_kwemp_technical_category"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_kwemp_technical_category"/>
				</search>
			</field>
		</record>

		<!--START:  Technical Category Action Window -->
		<record id="kwemp_technical_catagory_master_action" model="ir.actions.act_window">
			<field name="name">Technical Category</field>
			<field name="res_model">kwemp_technical_category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_technical_category_search_view"/>
		</record>
		<!--END:  Technical Category Action Window -->

		<!--START: category form view -->
		<record id="kwemp_technical_catagory_master_form" model="ir.ui.view">
			<field name="name">Technical Category Form</field>
			<field name="model">kwemp_technical_category</field>
			<field name="arch" type="xml">
				<form string="Category Form">
					<sheet>
						<group>
							<group string="Technical Category">
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--END: category form view -->

		<!--START: category Tree view -->
		<record id="kwemp_technical_catagory_master_tree" model="ir.ui.view">
			<field name="name">Technical Category Tree</field>
			<field name="model">kwemp_technical_category</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!--END: category Tree view -->

		<!--START: category Menu Item -->
		<menuitem name="Technical Categories "
		          id="kwemp_technical_skills_menu"
		          parent="kwemp_education_submenu"
		          action="kwemp_technical_catagory_master_action"
		          sequence="18"
		          groups="hr.group_hr_manager"/>
		<!--END: category Menu Item -->

		<!-- search view -->
		<record id="kwemp_technical_skill_search_view" model="ir.ui.view">
			<field name="name">kwemp_technical_skill_search_view</field>
			<field name="model">kwemp_technical_skill</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Technical Skills">
					<field name="name" string="Skills"/>
					<field name="category_id"/>
				</search>
			</field>
		</record>

		<!--START: technical skills action window -->
		<record id="kwemp_technical_skill_window_action" model="ir.actions.act_window">
			<field name="name">Technical Skills</field>
			<field name="res_model">kwemp_technical_skill</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_technical_skill_search_view"/>
		</record>
		<!--END: technical skills action window -->

		<!--START: Technical skills form view -->
		<record id="kwemp_technical_skill_view_form" model="ir.ui.view">
			<field name="name">Technical Skills Form</field>
			<field name="model">kwemp_technical_skill</field>
			<field name="arch" type="xml">
				<form string="Category Form">
					<sheet>
						<group>
							<group string="Technical Skills">
								<field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name="name" string="Skills"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--END: Technical skills form view -->

		<!--START: Technical skills tree view -->
		<record id="kwemp_technical_skill_view_tree" model="ir.ui.view">
			<field name="name">Technical Skills Tree</field>
			<field name="model">kwemp_technical_skill</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" string="Skills"/>
					<field name="category_id"/>
				</tree>
			</field>
		</record>
		<!--END: Technical skills tree view -->

		<menuitem name="Technical Skills"
		          id="kwemp_technical_skills_master_menu"
		          parent="kwemp_education_submenu"
		          action="kwemp_technical_skill_window_action"
		          sequence="19"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
