<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- search view -->
        <record id="kwmaster_relationship_name_search_view" model="ir.ui.view">
            <field name="name">kwmaster_relationship_name_search_view</field>
            <field name="model">kwmaster_relationship_name</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <search string="Insurance Premium Configuration">
                    <field name="name" string="Title"/>
                    <field name="gender" groups='kw_employee.group_payroll_manager,hr.group_hr_manager' />
                    <field name="insurance_amount" groups='kw_employee.group_payroll_manager,hr.group_hr_manager' />
                    <filter string="Insurance Covered " domain="[('is_insure_covered', '=',True)]" name="enable_insurance"/>
                    <filter string="Insurance Not Covered " domain="[('is_insure_covered', '=',False)]" name="disable_insurance"/>
                    <filter string="Active" domain="[('active', '=',True)]" name="enable_premium_configuration"/>
                    <filter string="Inactive" domain="[('active', '=',False)]" name="disable_premium_configuration"/>
                </search>
            </field>
        </record>

        <!-- explicit Course Action window definition -->
        <record id="kwmaster_relationship_name_action_window" model="ir.actions.act_window">
            <field name="name">Insurance Premium Configuration</field>
            <field name="res_model">kwmaster_relationship_name</field>
            <field name="type">ir.actions.act_window</field>
            <!--  <field name="priority">1</field> -->
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="kwmaster_relationship_name_search_view"/>
        </record>
          

        <!-- Role form view -->
        <record id="kwmaster_relationship_name_form_view" model="ir.ui.view">
            <field name="name">Relationships Form</field>
            <field name="model">kwmaster_relationship_name</field>
            <field name="arch" type="xml">
                <form string="Relationships">
                    <sheet>
                        <group>
                            <group string="Relationships">
                                <field name="name" string="Relationship Type"/>
                                <field name="insurance_amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Role Tree view -->
        <record id="kwmaster_relationship_name_tree_view" model="ir.ui.view">
            <field name="name">Relationships Tree</field>
            <field name="model">kwmaster_relationship_name</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="sequence" widget="handle"/>
                    <field name="name" string="Title"/>
                    <field name="gender" groups='kw_employee.group_payroll_manager,hr.group_hr_manager' />
                    <field name="is_insure_covered" groups='kw_employee.group_payroll_manager,hr.group_hr_manager' widget="boolean_toggle"/>
                    <field name="insurance_amount" groups='kw_employee.group_payroll_manager,hr.group_hr_manager' />
                    <field name="kw_id" groups="base.group_no_one" />
                    <field name="active" groups='kw_employee.group_payroll_manager,hr.group_hr_manager' widget="boolean_toggle"/>
                </tree>
            </field>
        </record>


        <!-- explicit Course Action Menu Item definition -->
        <menuitem name="Relationships"
                  id="kwmaster_relationship_name_menu"
                  parent="kwemp_organisation_submenu"
                  sequence="21"
                  action="kwmaster_relationship_name_action_window"
                  groups="hr.group_hr_manager"/>
    </data>
</odoo>
