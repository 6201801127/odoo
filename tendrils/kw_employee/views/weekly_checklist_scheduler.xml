<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
		<record id="id_weekly_checklist_scheduler" model="ir.cron">
			<field name="name">Employee: Weekly checklist scheduler</field>
			<field name="model_id" ref="model_kw_employee_onboarding_checklist"/>
			<field name="state">code</field>
			<field name="code">model.weekly_checklist_scheduler()</field>
			<field name="user_id" ref="base.user_root"/>
			<field name="interval_number">7</field>
			<field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=7)).strftime('%Y-%m-%d 03:00:00')" /> 
			<field name="numbercall">-1</field>
			<field name="doall" eval="False"/>
			<field name="priority">1</field>
			<field name="active" eval="False" />
		</record>

		<record id="id_per_night_scheduler" model="ir.cron">
			<field name="name">Employee: New join Consolidated Email of Today </field>
			<field name="model_id" ref="model_kw_employee_onboarding_checklist"/>
			<field name="state">code</field>
			<field name="code">model.daily_night_checklist_scheduler()</field>
			<field name="user_id" ref="base.user_root"/>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 11:00:00')" /> 
			<field name="numbercall">-1</field>
			<field name="doall" eval="False"/>
			<field name="priority">1</field>
			<field name="active" eval="False"/>
		</record>
	</data>
</odoo>