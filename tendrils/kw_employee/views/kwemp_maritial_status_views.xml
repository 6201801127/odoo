<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_maritial_master_search_view" model="ir.ui.view">
			<field name="name">kwemp_maritial_master_search_view</field>
			<field name="model">kwemp_maritial_master</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Marital Status">
					<field name="name" string="Marital Status"/>
					<field name="code"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_marital_status"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_marital_status"/>
				</search>
			</field>
		</record>

		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_maritial_master_action_window">
			<field name="name">Marital Status</field>
			<field name="res_model">kwemp_maritial_master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="kwemp_maritial_master_search_view"/>
		</record>
		<!-- actions views Ending-->

		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kwemp_maritial_master_view_tree">
			<field name="name">Marital Status Tree</field>
			<field name="model">kwemp_maritial_master</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="code"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record id="kwemp_maritial_view_form" model="ir.ui.view">
			<field name="name">Marital Status Form</field>
			<field name="model">kwemp_maritial_master</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="code"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<menuitem name="Marital Status"
		          id="kwemp_maritial_master_menu"
		          parent="kwemp_user_configuration_submenu"
		          action="kwemp_maritial_master_action_window"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
