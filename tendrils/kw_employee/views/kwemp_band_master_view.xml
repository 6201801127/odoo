<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record model="ir.ui.view" id="kwemp_band_master_list">
            <field name="name">Organization Band Tree</field>
            <field name="model">kwemp_band_master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="send_consolidated_mail" widget="boolean_toggle" groups="base.group_no_one"/>
                    <field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->
        <record id="kwemp_band_master_form" model="ir.ui.view">
            <field name="name">Organization Band Form</field>
            <field name="model">kwemp_band_master</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Organization Band">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="send_consolidated_mail" widget="boolean_toggle" groups="base.group_no_one"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- search view -->
        <record id="kwemp_band_master_search_view" model="ir.ui.view">
            <field name="name">kwemp_band_master_search_view</field>
            <field name="model">kwemp_band_master</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <search string="Organization Band">
                    <field name="name" string="Organization Band"/>
                    <field name="description"/>
                    <filter string="Active" domain="[('active', '=',True)]" name="enable_organization_band"/>
                    <filter string="Inactive" domain="[('active', '=',False)]" name="disable_organization_band"/>
                </search>
            </field>
        </record>

        <!-- actions views Opening-->
        <record model="ir.actions.act_window" id="kwemp_band_master_action_window">
            <field name="name">Organization Band</field>
            <field name="res_model">kwemp_band_master</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="kwemp_band_master_search_view"/>
        </record>
        <!-- actions views Ending-->

        <menuitem name="Organization Band" id="kwemp_band_menu" parent="kwemp_organisation_submenu" action="kwemp_band_master_action_window" />
    </data>
</odoo>