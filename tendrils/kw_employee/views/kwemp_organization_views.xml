<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- search view -->
		<record id="kwemp_organization_search_view" model="ir.ui.view">
			<field name="name">kwemp_organization_search_view</field>
			<field name="model">kwemp_organization</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<search string="Organization Types">
					<field name="name" string="Organization Types"/>
					<filter string="Active" domain="[('active', '=',True)]" name="enable_kwemp_organization"/>
					<filter string="Inactive" domain="[('active', '=',False)]" name="disable_kwemp_organization"/>
				</search>
			</field>
		</record>

		<!-- actions views Opening-->
		<record model="ir.actions.act_window" id="kwemp_organization_action_window_menu">
			<field name="name">Organization Types</field>
			<field name="res_model">kwemp_organization</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref=""/>
		</record>
		<!-- actions views Ending-->

		<!-- explicit tree view definition Opening -->
		<record model="ir.ui.view" id="kw_emp_organization_tree_view">
			<field name="name">View Organization Tree</field>
			<field name="model">kwemp_organization</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="kw_id" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view definition Ending -->

		<!-- explicit form view definition Opening -->
		<record id="kw_emp_organization_form_view" model="ir.ui.view">
			<field name="name">View Organization Form</field>
			<field name="model">kwemp_organization</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group string="Organization Type">
							<group name="group_left">
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view definition Ending -->

		<menuitem name="Organization Type"
		          id="kwemp_organization_type_menu_view"
		          parent="kwemp_organisation_submenu"
		          action="kwemp_organization_action_window_menu"
		          sequence="23"
		          groups="hr.group_hr_manager"/>
	</data>
</odoo>
