<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_user_tree_block_view" model="ir.ui.view">
			<field name="name">res.user.tree</field>
			<field name="model">res.users</field>
			<field name="priority" eval='52'/>
			<field name="arch" type="xml">
				<tree create="false" delete="false">
					<field name="name"/>
					<field name="emp_code"/>
					<field name="job_id"/>
					<field name="active" widget="boolean_toggle"/>
					<!-- <field name="job_id"/> -->
				</tree>
			</field>
		</record>

		<record id="block_user_action" model="ir.actions.act_window">
			<field name="name">Block User</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.users</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="domain">['|',('active','=',True),('active','=',False)]</field>
		</record>

		<record id="action_block_user_view_user_tree" model="ir.actions.act_window.view">
			<field eval="1" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_user_tree_block_view"/>
			<field name="act_window_id" ref="block_user_action"/>
		</record>

		<menuitem name="Block User"
		          id="action_block_user_menu"
		          parent="hr.menu_human_resources_configuration"
		          action="block_user_action"
		          sequence="1555"
		          groups="hr.group_hr_manager"/>
		
		 <record model="ir.ui.view" id="kw_res_users_form_view">
            <field name="name">res.users.view.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="replace">
                    <label for="email" class="oe_edit_only" string="Email Address"/>
                    <field name="email" attrs="{'required': True}" placeholder="Email Id"  />
                </xpath>

                <xpath expr="//label[@for='login']" position="replace"> 
                </xpath>

                <xpath expr="//field[@name='login']" position="replace">      
                    <label for="login" class="oe_edit_only" string="Login Id"/>             
                    <field name="login" attrs="{'required': True}" placeholder="Login Id"  />
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="kw_res_users_simple_form_view">
            <field name="name">res.users.view.simple.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="replace">
                    <label for="email" class="oe_edit_only" string="Email Address"/>
                    <field name="email" attrs="{'required': True}" placeholder="email@yourcompany.com"  />
                </xpath>

                <xpath expr="//label[@for='login']" position="replace"> 
                </xpath>

                <xpath expr="//field[@name='login']" position="replace">      
                    <label for="login" class="oe_edit_only" string="Login Id"/>             
                    <field name="login" attrs="{'required': True}" placeholder="Login Id"  />
                </xpath>

            </field>
        </record>

		<record model="ir.ui.view" id="view_users_tree_empcode">
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='name']" position="after">
                    <field name="emp_code"/>
                    <field name="job_id"/>
                    <field name="dept_id"/>
                </xpath>
            </field>
        </record>

	</data>
	
</odoo>
