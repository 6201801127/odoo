<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_kw_carryforward_encashment_report_tree" model="ir.ui.view">
            <field name="name">view.kw_carryforward_encashment_report.tree</field>
            <field name="model">kw_carryforward_encashment_report</field>
            <field name="arch" type="xml">
                <tree string="Carry Forward and Encashment Report">
                    <field name="employee_id" invisible="1"/>
                    <field name="emp_code" />
                    <field name="emp_name" />
                    <field name="designation" />
                    <field name="department" />
                    <field name="date_of_joining" />
                    <!-- <field name="division" />
                    <field name="section"/> -->
                    <field name="leave_type_id" />
                    <field name="tot_entitlement" />
                    <field name="tot_leave_taken" />
                    <field name="tot_lapse_days" />
                    <field name="remaining_days" />
                    <field name="retirement" invisible="1"/>
                    <field name="carry_forward_days" string="Carry Forward" />
                    <field name="encashment_days" string="Encashable"/>
                    <field name="cycle_period" string="Fiscal Year" />                    
                </tree>
            </field>
        </record>

        <record id="view_kw_carryforward_encashment_report_search" model="ir.ui.view">
            <field name="name">view.kw_carryforward_encashment_report.search</field>
            <field name="model">kw_carryforward_encashment_report</field>
            <field name="arch" type="xml">
                <search string="kw_carryforward_encashment_report_search">
                    <field name="employee_id" />
                    <field name="leave_type_id"/>
                    <field name="cycle_period"/>
                    <filter string="Current Financial Year" name="current_financial_year" domain="[('current_financial_year','=',True)]"/>
                    <filter string="Previous Financial Year" name="previous_financial_year" domain="[('previous_financial_year','=',True)]" />
                    <!-- <filter name="my_and_sub_ordinate_leave" string="My &amp; Sub-Ordinates Leave" domain="['|',('employee_id.user_id','=',uid),('employee_id.parent_id.user_id','=',uid)]" /> -->
                </search>
            </field>
        </record>

        <!-- <record id="view_kw_carryforward_encashment_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_carryforward_encashment_report.pivot</field>
            <field name="model">kw_carryforward_encashment_report</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <field name="leave_type" type="row"/>
                    <field name="no_of_days" type="measure"/>
                </pivot>
            </field>
        </record> -->

        <record id="action_kw_carryforward_encashment_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Leave Report</field>
            <field name="res_model">kw_carryforward_encashment_report</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{"search_default_current_financial_year":1,"create": False,"edit": False,"import": False,"delete": False,"toolbar":False}</field>
           
        </record>

        <menuitem id="kw_carryforward_encashment_report_menu" name="Carry Forward &amp; Encashment Report" parent="kw_encashment_menu" action="action_kw_carryforward_encashment_report_act_window" sequence="5" />
        <record id="kw_hr_leaves.kw_carryforward_encashment_report_menu" model="ir.ui.menu">
			<field name="groups_id" eval="[(3,ref('base.group_no_one'))]"/>
		</record>
    </data>
</odoo>
