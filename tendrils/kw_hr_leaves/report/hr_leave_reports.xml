<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="hr_leave_report_tree_cal" model="ir.ui.view">
        <field name="name">report.hr.holidays.report.leave_all.tree.cal</field>
        <field name="model">hr.leave.report</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_report_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='number_of_days']" position="replace">
                <field name="number_of_days" string="Leave Days" sum="Remaining Days"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_report_kanban_cal" model="ir.ui.view">
        <field name="name">report.hr.holidays.report.leave_all.kanban.cal</field>
        <field name="model">hr.leave.report</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_report_kanban"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='number_of_days']" position="replace">
                <field name="number_of_days" string="Leave Days"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_report_search_cal" model="ir.ui.view">
        <field name="name">report.hr.holidays.report.leave_all.search.cal</field>
        <field name="model">hr.leave.report</field>
        <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter_report"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_team_leaves']" position="replace">
                <filter string="My Subordinate Leaves" name="my_team_leaves" domain="[('employee_id.parent_id.user_id', '=', uid)]" help="Leaves of Your Subordinate"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.menu" id="hr_holidays.menu_open_company_allocation">
        <field name="action" eval="False"/>
    </record>
    
</odoo>
        
     