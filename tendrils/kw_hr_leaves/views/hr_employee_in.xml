<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_hr_leave_inherit_view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.inherit.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(hr_holidays.act_hr_employee_holiday_request)d']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- <xpath expr="//page[@name='hr_settings']/group/group[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> -->
            </field>
        </record>

        <record id="employee_hr_holiday_leave_inherit_view" model="ir.ui.view">
            <field name="name">hr.employee.leave.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']/group/group[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_holidays.hr_kanban_view_employees_kanban" model="ir.ui.view">
            <field name="active" eval="False" />
        </record>
    </data>
</odoo>