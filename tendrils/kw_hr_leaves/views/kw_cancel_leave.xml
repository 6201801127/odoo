<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_cancel_leave_apply_list">
            <field name="name">Leave Cancellation Requests</field>
            <field name="model">kw_cancel_leave</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="approved_leave_emp_id"/>
                    <field name="from_day"/>
                    <field name="to_day"/>
                    <field name="description"/>
                    <field name="status"/>
                    <field name="approver_id" string='Pending At' attrs="{'invisible': [('status','in',['approve','reject'])]}"/>
                    <field name="action_taken_on"/>
                    <field name="comment" string='Remarks'/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_cancel_leave_approval_list">
            <field name="name">Cancel Leave</field>
            <field name="model">kw_cancel_leave</field>
            <field name="arch" type="xml">
                <tree create='false'>
                    <field name="approved_leave_emp_id"/>
                    <field name="from_day"/>
                    <field name="to_day"/>
                    <field name="description"/>
                    <field name="status"/>
                    <field name="approver_id" string='Pending At' attrs="{'invisible': [('status','in',['approve','reject'])]}"/>
                    <field name="action_taken_on"/>
                    <field name="comment" string='Remarks'/>
                    <field name="check_parent" invisible='1'/>
                    <button string="Take Action" name="leave_cancel_take_action" attrs="{'invisible': ['|',('check_parent', '=', False),('status','in',['approve','reject'])]}" type="object" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_cancel_leave_form">
            <field name="name">Leave Cancellation Requests</field>
            <field name="model">kw_cancel_leave</field>
            <field name="arch" type="xml">
                <form string='Leave Cancellation Request'>
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group name="alloc_left_col">
                            <field name="approved_leave_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" style="width: 60%" invisible="context.get('hide_leave',False)" attrs="{'readonly': [('status','in',['approve','reject'])]}"/>
                            <field name="name"/>

                            <label for="duration" string="Duration" attrs="{'invisible': [('approved_leave_id', '=', False)]}"/>

                            <div attrs="{'invisible': [('approved_leave_id', '=', False)]}">
                                <field name="duration" nolabel="1" class="oe_inline" modifiers="{'readonly':true}"/>
                                <span class="ml8">Days</span>
                            </div>
                            <label for="from_day" string="From" attrs="{'invisible': [('approved_leave_id', '=', False)]}"/>
                            <div attrs="{'invisible': [('approved_leave_id', '=', False)]}">
                                <field name="from_day" style="width: 15% ; pointer-events:none;"/>
                                <field name="from_half_day" options="{'horizontal': True}" attrs="{'invisible': [('request_unit_half', '=', False)]}" style="width: 15% ; ppointer-events:none;"/>
                            </div>
                            <label for="to_day" string="To" attrs="{'invisible': [('approved_leave_id', '=', False)]}"/>
                            <div attrs="{'invisible': [('approved_leave_id', '=', False)]}">
                                <field name="to_day" style="width:15% ; pointer-events:none;"/>
                                <field name="to_half_day" options="{'horizontal': True}" attrs="{'invisible': [('request_unit_half_to_period', '=', False)]}" style="width: 15% ; ppointer-events:none;"/>
                            </div>


                            <field name="reason" attrs="{'invisible': [('approved_leave_id', '=', False)]}" style="width: 70% ; pointer-events:none;"/>

                            <!-- <separator /> -->

                            <field name="check_parent" invisible="1"/>
                            <field name="request_unit_half" invisible="1"/>
                            <field name="request_unit_half_to_period" invisible="1"/>

                        </group>
                        <group invisible="context.get('hide_btn',False)">
                            <field name="leave_approval_log_ids" readonly='1'>
                                <tree>
                                    <field name="action_taken_by"/>
                                    <field name="state" string='Status'/>
                                    <field name="authority_remark"/>
                                    <field name="create_date" string='Action Taken On'/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="description" attrs="{ 'readonly': [('status','in',['approve','reject'])]}"/>
                        </group>
                        <notebook groups="base.group_no_one">
                            <!-- <page invisible="context.get('hide_btn',False)" string="Leave Approval Logs">
                                <group>
                                    <field name="leave_approval_log_ids"/>
                                </group>
                            </page> -->
                            <page invisible="context.get('hide_leave',False)" string="Cancellation Approval Logs">
                                <group>
                                    <field name="approval_log_ids" readonly='1'/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Submit" invisible="context.get('hide_btn',False)" name="create_cancel" type="object" class="btn-info mr-2"/>
                        <button string="Close" invisible="context.get('hide_btn',False)" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_cancel_leave_approval_form">
            <field name="name">Cancel Leave</field>
            <field name="model">kw_cancel_leave</field>
            <field name="arch" type="xml">
                <form create='false'>
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="check_parent" invisible="1"/>
                            <field name="request_unit_half" invisible="1"/>
                            <field name="request_unit_half_to_period" invisible="1"/>
                            <field name="approved_leave_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" style="width: 60%" invisible="1"/>

                            <field name="name"/>

                            <label for="duration" string="Duration" readonly="1" attrs="{'invisible': [('approved_leave_id', '=', False)] }"/>

                            <div attrs="{'invisible': [('approved_leave_id', '=', False)]}">
                                <field name="duration" nolabel="1" class="oe_inline" modifiers="{'readonly':true}"/>
                                <span class="ml8">Days</span>
                            </div>
                            <label for="from_day" string="From" attrs="{'invisible': [('approved_leave_id', '=', False)]}"/>
                            <div attrs="{'invisible': [('approved_leave_id', '=', False)]}">
                                <field name="from_day" style="width: 15% ; pointer-events:none;"/>
                                <field name="from_half_day" options="{'horizontal': True}" attrs="{'invisible': [('request_unit_half', '=', False)]}" style="width: 15% ; ppointer-events:none;"/>
                            </div>
                            <label for="to_day" string="To" attrs="{'invisible': [('approved_leave_id', '=', False)]}"/>
                            <div attrs="{'invisible': [('approved_leave_id', '=', False)]}">
                                <field name="to_day" style="width:15% ; pointer-events:none;"/>
                                <field name="to_half_day" options="{'horizontal': True}" attrs="{'invisible': [('request_unit_half_to_period', '=', False)]}" style="width: 15% ; ppointer-events:none;"/>
                            </div>

                            <field name="reason" attrs="{'invisible': [('approved_leave_id', '=', False)]}" style="width: 60% ; pointer-events:none;"/>
                            <field name="description" readonly="1" style="width: 60%"/>

                            <field name="comment" style="width: 60%" invisible='1'/>

                        </group>
                        <group invisible="context.get('btn_hide',False)">
                            <field name="forward_request" string="Forward Request"/>
                            <field name="forward_to" string="Forward To" attrs="{'invisible': ['|',('forward_request', '=', False),('status','in',['approve','reject'])],'required': [('forward_request', '=', True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>

                            <field name="remark" string="Remark" required='1'/>
                        </group>
                    </sheet>
                    <footer invisible="context.get('btn_hide',False)">
                        <button string="Approve" name="action_approve" type="object" class="btn-success mr-2" attrs="{'invisible': ['|','|',('check_parent', '=', False),('forward_request', '=', True),('status','in',['approve','reject'])]}"/>

                        <button string="Reject" name="action_reject" type="object" class="btn-danger mr-2" attrs="{'invisible': ['|','|',('check_parent', '=', False),('forward_request', '=', True),('status','in',['approve','reject'])]}"/>

                        <button string='Forward' attrs="{'invisible': ['|','|',('check_parent', '=', False),('forward_request', '=', False),('status','in',['approve','reject'])]}" name="action_forward" type="object" class="text-white btn-warning mr-2" />

                        <button string="Close" class="btn-secondary" special="cancel" attrs="{'invisible': ['|',('check_parent', '=', False),('status','in',['approve','reject'])]}"/>

                    </footer>
                </form>
            </field>
        </record>

        <record id="kw_cancel_leave_filter_report" model="ir.ui.view">
            <field name="name">Cancel Leave</field>
            <field name="model">kw_cancel_leave</field>
            <field name="arch" type="xml">
                <search string="Search Leave">
                    <field name="create_date" invisible='1' />
                    <field name="designation" />
                    <field name="department" />
                    <field name="division" />
                    <field name="section"/>
                    <separator/>
                    <filter string="Applied" domain="[('status', '=', 'apply')]" name="confirmed"/>
                    <filter string="Forwarded" domain="[('status', '=', 'forward')]" name="forward"/>
                    <filter string="Approved" domain="[('status', '=', 'approve')]" name="approved"/>
                    <filter string="Rejected" domain="[('status', '=', 'reject')]" name="rejected"/>
                    <separator/>
                    <filter string="Leave Date" name="date_of_leave" date="from_day"/>
                    <separator/>
                    <filter string="This Month" name="current_month" domain="['|','|',('from_day', 'like',context_today().strftime('%Y-%m')),
                                                                                             ('to_day', 'like',context_today().strftime('%Y-%m')),
                                                                                             '&amp;',('from_day','&lt;',(context_today().strftime('%Y-%m-01'))), ('to_day','&gt;=',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01'))
                                                                                    ]"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="kw_cancel_leave_act_window" model="ir.actions.act_window">
            <field name="name">Leave Cancellation Requests</field>
            <field name="res_model">kw_cancel_leave</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_cancel_leave_apply_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_cancel_leave_form')})]"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid','=',uid)]</field>
            <field name="context">{"create": False,"edit": False,"import": False,"delete": False,"hide_btn":1,"search_default_current_month": 1}</field>
        </record>

        <record id="kw_cancel_leave_approval_act_window" model="ir.actions.act_window">
            <field name="name">Leave Cancellation Requests to Approve</field>
            <field name="res_model">kw_cancel_leave</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_cancel_leave_approval_list')})]"/>
            <field name="view_mode">tree</field>
            <field name="domain">[('approver_id.user_id','=',uid),('status','not in',('approve','reject'))]</field>
            <field name="context">{"create": False,"edit": False,"import": False,"delete": False,"btn_hide":1}</field>
        </record>

    </data>
</odoo>