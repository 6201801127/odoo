<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_leave_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.leave</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Leave" string="Leave" data-key="hr_holidays"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>Leave Escallation Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="on_tour"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">On Tour Escallation</span>
                                <div class="text-muted">
                                    Enable Escallation when RA is On Tour.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="on_leave"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">On Leave Escallation</span>
                                <div class="text-muted">
                                    Enable Escallation when RA is On Leave.
                                </div>
                            </div>
                        </div>
                    </div>


                    <h2>CompOff Settings</h2>
                    <div class="row mt16 o_settings_container" name="CompOff">
                        <div class="col-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Half Day</span>
                                <div class="text-muted">
                                    Validate the half day hour during apply for CompOff.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="col-md-4 o_light_label" for="half_day"/>
                                        <field name="half_day" required='1'/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Full Day</span>
                                <div class="text-muted">
                                    Validate the full day hour during apply for CompOff.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="col-md-4 o_light_label" for="full_day"/>
                                        <field name="full_day" required='1'/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="kw_hr_leave_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Leave Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_hr_leaves'}</field>
    </record>

</odoo>
