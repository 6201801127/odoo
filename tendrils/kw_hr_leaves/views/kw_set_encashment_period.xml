<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record model="ir.ui.view" id="kw_set_encashment_period_list">
            <field name="name">Encashment Period</field>
            <field name="model">kw_set_encashment_period</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="financial_year_id"/>
                    <field name="excluded_employees"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="applicable_for" />
                    <!-- <field name="first_year_service"/> -->
                    <field name="notice_period"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->
        <record id="hr_employee_encashment_tree_view" model="ir.ui.view">
            <field name="name">Employee Assessment feedback inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="66"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="display_name" string='Name'/>
                    <field name="job_id" string='Job Position'/>
                    <field name="department_id"/>
                    <field name="parent_id" string='Reporting Authority'/>
                    <field name="work_email"/>
                    <field name="mobile_phone" string='Mobile'/>
                    <field name="company_id" string='Company'/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_set_encashment_period_form">
            <field name="name">Encashment Period</field>
            <field name="model">kw_set_encashment_period</field>
            <field name="arch" type="xml">
                <form>
                    <field name="is_expired_date" invisible='1'/>
                    <header>
                        <button string="Compute Encashment &amp; Carry Forward" name="action_compute_encashment_carry_forward" type="object" icon="fa-calculator" class="btn-primary" attrs="{'invisible': [('is_expired_date','=',True)]}" confirm="Are you sure to compute the encashment &amp; carry forward of employees ?" />

                        <button icon="fa-refresh"  string="Process Carry Forward" name="action_process_carry_forward" type="object" class="btn-warning" confirm="Are you sure to process the carry forward(s) ?"/>
                        
                    </header>
                    <sheet>
                        <group>
                            <field name="financial_year_id"/>
                            <!-- <field name="user_id"/> -->
                            <field name="excluded_employees" options="{'no_create': True,'no_open': False}" context="{'tree_view_ref': 'kw_hr_leaves.hr_employee_encashment_tree_view'}">
                                <tree editable="bottom">
                                    <field name="image_small" string="Photo" class="oe_avatar" widget="image" height="25px" width="25px"/>
                                    <field name="name"/>
                                    <field name="work_email" string="Email"/>
                                    <field name="department_id" string="Department"/>
                                </tree>
                            </field>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="applicable_for" widget='many2many_tags' options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" />
                            <!-- <field name="first_year_service"/> -->
                            <field name="notice_period"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_set_encashment_period_search" model="ir.ui.view">
            <field name="name">Encashment Period</field>
            <field name="model">kw_set_encashment_period</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="financial_year_id" string="Financial Year" />
                    <field name="excluded_employees" string="User" />
                    <separator/>
                    <group expand="0" string="Group By">
                        <field name="financial_year_id" string="Financial Year" />
                        <field name="excluded_employees" string="User" />
                    </group>
                </search>
            </field>
        </record>


        <!-- actions views Opening-->
        <record model="ir.actions.act_window" id="kw_set_encashment_period_window">
            <field name="name">Encashment Period</field>
            <field name="res_model">kw_set_encashment_period</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- actions views Ending-->

    </data>
</odoo>