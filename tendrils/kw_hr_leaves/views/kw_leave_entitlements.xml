<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record model="ir.ui.view" id="kw_entitlements_list">
            <field name="name">Leave Entitlements</field>
            <field name="model">kw_leave_entitlements</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="branch_id"/>
                    <field name="grade_id"  widget='many2many_tags'/>
                    <field name="entitlement_ids"  widget='many2many_tags' />
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->


        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_entitlements_form">
            <field name="name">Leave Entitlements</field>
            <field name="model">kw_leave_entitlements</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="branch_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="grade_id"  widget='many2many_tags' options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="entitlement_ids" string='Leave Allocation'>
                                <tree editable = "bottom">
                                    <field name="leave_type_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->


        <record model="ir.ui.view" id="kw_entitlements_search">
            <field name="name">Leave Entitlements</field>
            <field name="model">kw_leave_entitlements</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="branch_id" string="Branch" />
                    <field name="grade_id" string="Grade" />
                    <group expand="0" string="Group By">
                        <filter name="branch_id" string="Branch" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- actions views Opening-->
        <record model="ir.actions.act_window" id="kw_entitlements_window">
            <field name="name">Leave Entitlements</field>
            <field name="res_model">kw_leave_entitlements</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- actions views Ending-->

    </data>
</odoo>