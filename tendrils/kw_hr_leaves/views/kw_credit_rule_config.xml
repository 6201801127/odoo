<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record model="ir.ui.view" id="kw_credit_rule_list">
            <field name="name">Credit Rule</field>
            <field name="model">kw_credit_rule_config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="credit_rule"/>
                    <!-- <field name="leave_type_id" string="Applicable to" widget="many2many_tags" /> -->
                    <field name="rule_ids" string="Rule" widget="many2many_tags" />
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->


        <!-- explicit form view definition Opening -->
        <record model="ir.ui.view" id="kw_credit_rule_form">
            <field name="name">Credit Rule</field>
            <field name="model">kw_credit_rule_config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="credit_rule"/>
                            <!-- <field name="leave_type_id"  widget="many2many_tags" /> -->
                        </group>
                        <group>
                            <field name="rule_ids" string='Rules'>
                                <tree editable = "bottom">
                                    <field name="from_day"/>
                                    <field name="to_day"/>
                                    <field name="percentage"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- explicit form view definition Ending -->

        <!-- actions views Opening-->
        <record model="ir.actions.act_window" id="kw_credit_rule_window">
            <field name="name">Credit Rule</field>
            <field name="res_model">kw_credit_rule_config</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- actions views Ending-->

        
    </data>
</odoo>