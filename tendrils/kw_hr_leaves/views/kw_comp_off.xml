<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- explicit tree view definition Opening -->
        <record model="ir.ui.view" id="kw_apply_comp_off_list">
            <field name="name">Compensatory Off</field>
            <field name="model">kw_comp_off</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <!-- <field name="location_id"/>
                    <field name="department_id"/> -->
                    <field name="day_off"/>
                    <field name="reason"/>
                    <field name="action_taken_id" />
                    <field name="remarks"/>
                    <field name="status"/>

                </tree>
            </field>
        </record>
        <!-- explicit tree view definition Ending -->

        <record model="ir.ui.view" id="kw_apply_comp_off_form">
            <field name="name">Compensatory Off</field>
            <field name="model">kw_comp_off</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="action_taken_id" invisible='1' />
                            <field name="employee_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <!-- <field name="location_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/> -->
                            <field name="day_off"  attrs="{'readonly': [('status','in',['approve','reject'])]}"/>
                            <field name="reason"  attrs="{'readonly': [('status','in',['approve','reject'])]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter" modifiers="{}">
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="activity_ids" widget="mail_activity" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}" options="{'display_log_button': True}"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="kw_approval_comp_off_list">
            <field name="name">Compensatory Off</field>
            <field name="model">kw_comp_off</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="employee_id"/>
                    <field name="location_id"/>
                    <field name="department_id"/>
                    <field name="day_off"/>
                    <field name="reason"/>
                    <field name="remarks"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_approval_comp_off_form">
            <field name="name">Compensatory Off</field>
            <field name="model">kw_comp_off</field>
            <field name="arch" type="xml">

                <form create="false">
                    <header>
                        <button string="Approve" name="action_approve" type="object" class="btn-success mr-2" attrs="{'invisible': [('status','in',['approve','reject'])]}"/>
                        <!-- <button string="Hold" name="action_hold" type="object" class="btn btn-info"/> -->
                        <button string="Reject" name="action_reject" type="object" class="btn-danger" attrs="{'invisible': [('status','in',['approve','reject'])]}"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <!-- <field name="location_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/> -->
                            <field name="day_off" readonly="1"/>
                            <field name="log_in" readonly="1"/>
                            <field name="log_out" readonly="1"/>
                            <field name="working_hrs" readonly="1"/>
                            <field name="reason" readonly="1"/>
                            <field name="comp_off" widget='radio' options="{'horizontal': true}"  attrs="{'readonly': [('status','in',['approve','reject'])]}"/>
                            <field name="remarks"   attrs="{'readonly': [('status','in',['approve','reject'])]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter" modifiers="{}">
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="activity_ids" widget="mail_activity" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}" options="{'display_log_button': True}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_apply_comp_off_search" model="ir.ui.view">
            <field name="name">Compensatory Off</field>
            <field name="model">kw_comp_off</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="employee_id" string="Employee" />
                    <field name="day_off" string="Day off" />
                    <filter name="status" string="Applied" domain="[('status','=','apply')]"/>
                    <filter name="status" string="Approved" domain="[('status','=','approve')]"/>
                    <filter name="status" string="Reject" domain="[('status','=','reject')]"/>
                </search>
            </field>
        </record>


        <record id="kw_apply_comp_off_window" model="ir.actions.act_window">
            <field name="name">Compensatory Off</field>
            <field name="res_model">kw_comp_off</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_apply_comp_off_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_apply_comp_off_form')})]"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid','=',uid)]</field>
        </record>

        <record id="kw_approval_comp_off_window" model="ir.actions.act_window">
            <field name="name">Compensatory Off Approval</field>
            <field name="res_model">kw_comp_off</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_approval_comp_off_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('kw_approval_comp_off_form')})]"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('action_taken_id.user_id','=',uid)]</field>
        </record>

    </data>
</odoo>



