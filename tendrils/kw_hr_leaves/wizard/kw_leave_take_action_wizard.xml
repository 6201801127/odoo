<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_kw_leave_take_action_wizard_form" model="ir.ui.view">
            <field name="name">view.kw_leave_take_action_wizard.form</field>
            <field name="model">kw_leave_take_action_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h2>
                                <field name="leave_request_id" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group name="alloc_left_col">
                                <!-- <field name="request_unit_half" invisible="1"/>
                                <field name="request_unit_half_to_period" invisible="1"/> -->
                                <field name="leave_code" invisible="1" />
                                <field name="employee_id" readonly="1"/>
                                <field name="holiday_status_id" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" />
                                <field name="number_of_days" invisible="1"/>
                                <label for="number_of_days" string="Duration"/>
                                <div>
                                    <field name="number_of_days" readonly="1" class="oe_inline"/>
                                    <span class="ml8">Days</span>
                                </div>
                                <label for="request_date_from" string="From"/>
                                <div class="o_row o_row_readonly o_hr_holidays_dates">
                                    <field name="request_date_from" readonly="1" class="oe_inline"/>

                                    <field name="request_date_from_period" readonly="1" class="oe_inline" string="In" options="{'horizontal': True}" attrs="{ 'required': [('request_unit_half', '=', True)],
                                'invisible': [('request_unit_half', '=', False)]}"/>

                                    <label for="request_unit_half" />
                                    <field name="request_unit_half" readonly="1"/>

                                </div>


                                <label for="request_date_to" string="To"/>
                                <div class="o_row o_row_readonly o_hr_holidays_dates">

                                    <field name="request_date_to" class="oe_inline" readonly="1"/>

                                    <field name="request_date_to_period" readonly="1" class="oe_inline" string="In" options="{'horizontal': True}" attrs="{ 'required': [('request_unit_half_to_period', '=', True)],
                            'invisible': [('request_unit_half_to_period', '=', False)]}"/>

                                    <label for="request_unit_half_to_period"/>
                                    <field name="request_unit_half_to_period" readonly="1"/>
                                </div>


                                <field name="leave_reason" readonly="1" string="Reason" placeholder="Add a reason..."/>
                                <field name="medical_doc" widget="pdf_viewer" attrs="{'invisible': ['|','&amp;',('leave_code', '=', 'ML'),('number_of_days','&lt;',3),('leave_code', 'not in', ['ML','SPL'])]}" />
                            </group>
                        </group>
                        <group>
                           <field name="forward_request" string="Forward Request" attrs="{'invisible': ['|',('action_type', 'not in',[False,'forward']),('action_type', '=','cancel')]}"/> <!-- attrs="{'invisible': ['|',('action_type', 'not in',[False,'forward']),('action_type', '=','cancel')]}" -->
                            <field name="forwarded_to" string="Forward To" attrs="{'invisible': [('forward_request', '=', False)],'required': [('forward_request', '=', True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/> 
                            <field name="authority_remark" string="Remark" required="1" placeholder="Enter your remark..."/>
                        </group>
                    </sheet>

                    <footer>
                        <field name="action_type" invisible='1' />
                        <field name="state" invisible='1'  />
                        <button string='Approve' attrs="{'invisible': ['|',('forward_request', '=', True),('action_type', 'not in',['approve',False])]}" name="leave_request_approve" type="object" class="btn-success mr-2" />

                        <button string="Hold" type="object" class="btn btn-info" attrs="{'invisible':
                          ['|','|',('forward_request', '=', True),('state','in', ['hold']),('action_type', 'not in',['hold',False])]}" name="leave_request_hold" />

                        <button string='Reject' attrs="{'invisible': ['|',('forward_request', '=', True),('action_type', 'not in',['reject',False])]}" name="leave_request_reject" type="object" class="btn font-weight-bold text-white btn-danger" />

                        <button string='Forward' attrs="{'invisible': ['|',('forward_request', '=', False),('action_type', 'not in',['forward',False])]}" name="leave_request_forward" type="object" class="btn font-weight-bold text-white btn-warning" />

                        <button string='Cancel Request' attrs="{'invisible': [('action_type', '!=','cancel')]}" name="allocation_request_cancel" type="object" class="btn font-weight-bold text-white btn-warning" />

                        <button string="Close" class="btn-secondary" special="cancel"/>

                    </footer>
                </form>
            </field>
        </record>

        <record id="leave_take_action_wizard_window" model="ir.actions.act_window">
            <field name="name">Take Action</field>
            <field name="res_model">kw_leave_take_action_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kw_leave_take_action_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
