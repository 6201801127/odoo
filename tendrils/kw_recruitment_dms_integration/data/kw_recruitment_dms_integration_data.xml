<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kwdms_recruitment_cv_storage" model="kw_dms.storage">
            <field name="name">Recruitment</field>
            <field name="save_type">file</field>
            <field name="activate_revision">True</field>
            <field name="activate_versioning">True</field>
        </record>

        <record id="kwdms_recruitment_cv_read_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Recruitment CV Folder Read Access Group</field>  
            <field name="perm_read">True</field> 
            <field name="groups" eval="[
                        (4, ref('hr_recruitment.group_hr_recruitment_manager')),
                        (4, ref('kw_recruitment.group_hr_recruitment_executive')),
                        (4, ref('kw_recruitment.group_hr_recruitment_consultant'))]"/>
        </record>

        <record id="kwdms_recruitment_cv_all_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Recruitment CV Folder All Access Group</field>  
            <field name="perm_create">True</field>          
            <field name="perm_read">True</field>  
            <field name="perm_write">True</field>          
            <field name="perm_unlink">True</field>  
            <field name="groups" eval="[
                    (4, ref('hr_recruitment.group_hr_recruitment_manager')),
                    (4, ref('kw_recruitment.group_hr_recruitment_executive')),
                    (4, ref('kw_recruitment.group_hr_recruitment_consultant')),
                    (4, ref('kw_recruitment.group_hr_recruitment_internal_job_posting'))]"/>
        </record>       

        <record id="kwdms_recruitment_cv_directory" model="kw_dms.directory">
            <field name="name">Documents</field>  
            <field name="is_root_directory">True</field>
            <field name="root_storage" ref="kwdms_recruitment_cv_storage"/>
            <field name="groups" eval="[
            (4, ref('kw_dms.kwdms_all_access_admin_grp')),
            (4, ref('kw_recruitment_dms_integration.kwdms_recruitment_cv_all_access_grp')),
            (4, ref('kw_recruitment_dms_integration.kwdms_recruitment_cv_read_access_grp'))]"/>
        </record>

        <!--Default Config Setting for categories -->
         <!-- activate categories by default -->
        <function model="ir.config_parameter" name="set_param"
                  eval="('kw_dms.recruitment_cv_folder', ref('kw_recruitment_dms_integration.kwdms_recruitment_cv_directory'))"/>

    </data>
</odoo>
