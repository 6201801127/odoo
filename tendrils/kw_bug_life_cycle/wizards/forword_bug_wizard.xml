<odoo>
    <data>
        <!--  form view  -->
        <record id="kw_forword_bug_wizards_form" model="ir.ui.view">
            <field name="name">Assigne Developer</field>
            <field name="model">kw_forword_bug_wizards</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Forward Module Lead">
                    <sheet>
                        <group>
                            <field name="project_id"  options="{'no_create': True, 'no_open': True, 'no_edit': True}"
                                   readonly='1' />
                            <field name="defect_id" invisible='1' />
                            <field name="module_lead_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"
                                   required = 'True'/>
                            <field name= "description"  required = 'True'/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Submit' name="forword_bug" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>