<odoo>
    <data>
        <!--  Remarks Wizard form view  -->
        <record id="tc_exc_complete_wizard_form" model="ir.ui.view">
            <field name="name">Complete Execution Wizard</field>
            <field name="model">tc_exc_complete_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Complete Execution Wizard">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <div class="text-center text-primary h3">
                                <field name="complete_msg" readonly="1" widget="html"/>
                                <field name="complete_msg1" readonly="1" widget="html"/>
                                <field name="ok_btn_bool" invisible="1"/>
                            </div>
                        </div>
                    </div>
                </form>
                <footer>
                    <button string='Complete' name="complete_exc" type="object" class="btn-success" attrs="{'invisible':[('ok_btn_bool', '=', True)]}"/>
                    <button string="Cancel" class="btn-danger" special="cancel" attrs="{'invisible':[('ok_btn_bool', '=', True)]}"/>
                    <button string="Ok" class="btn-primary" special="cancel" attrs="{'invisible':[('ok_btn_bool', '!=', True)]}"/>
                </footer>
            </field>
        </record>
    </data>
</odoo>