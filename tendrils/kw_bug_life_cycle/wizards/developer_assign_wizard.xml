<odoo>
    <data>
        <!--  Remarks Wizard form view  -->
        <record id="developer_assign_wizards_form" model="ir.ui.view">
            <field name="name">Assign Developer</field>
            <field name="model">kw_developer_assign_wizards</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Remark Wizards">
                    <sheet>
                        <group>
                            <field name="defect_id" invisible='1'/>
                            <field name= "developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                            <field name="assign_remarks" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Submit' name="btn_assign" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ml_developer_assign_wizards_form" model="ir.ui.view">
            <field name="name">Assign Developer</field>
            <field name="model">kw_developer_assign_wizards</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Remark Wizards">
                    <sheet>
                        <group>
                            <field name="defect_id" invisible='1'/>
                            <field name= "developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                            <field name="assign_remarks" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Submit' name="ml_assign_developer" type="object" context="{'hide_assign': context.get('hide_assign', False)}" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="filter_data_wizards_form" model="ir.ui.view">
            <field name="name">Filter Data</field>
            <field name="model">filter_bug_raised_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Filter Wizards">
                    <sheet>
                        <group>
                            <field name="filter_data" widget="radio" options="{'horizontal': true}"/>
                            <field name= "fiscal_year" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'required':[('filter_data','not in',[1,False])],'invisible':[('filter_data','in',[1,False])]}"/>
                            <field name="current_quater" attrs="{'invisible':[('filter_data','!=',3)],'required':[('filter_data','=',3)]}"/>
                            <field name="monthly_data" attrs="{'invisible':[('filter_data','!=',2)],'required':[('filter_data','=',2)]}"/>
                            <field name="half_yearly" attrs="{'invisible':[('filter_data','!=',4)],'required':[('filter_data','=',4)]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='View Data' name="bug_report_filter" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_filter_data_wizard" model="ir.actions.act_window">
            <field name="name">Report Filter</field>
            <field name="res_model">filter_bug_raised_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="filter_data_wizards_form" />
        </record>


        <!--        secret wizard-->
        <record id="secret_wizard_wizards_form" model="ir.ui.view">
            <field name="name">secret_wizard</field>
            <field name="model">secret_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Remark Wizards">
                    <sheet>
                        <group>
                            <field name="check_int" invisible='1'/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Submit' name="secret_btn_assign" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_secret_wizard" model="ir.actions.act_window">
            <field name="name">secret_wizard</field>
            <field name="res_model">secret_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="secret_wizard_wizards_form" />
        </record>

        <!--Delegate Wizard Tester-->

        <record id="tester_delegate_wizards_form" model="ir.ui.view">
            <field name="name">Delegate</field>
            <field name="model">kw_delegate_wizards</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delegate Wizards">
                    <sheet>
                        <group>
                            <field name="defect_id" invisible='1'/>
                            <field name= "tester_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                            <field name="assign_remarks" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Delegate' name="btn_delegate" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <!--Delegate Wizard Developer-->

        <record id="kw_delegate_wizards_developer_form" model="ir.ui.view">
            <field name="name">Delegate</field>
            <field name="model">kw_delegate_wizards_developer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delegate Wizards">
                    <sheet>
                        <group>
                            <field name="defect_id" invisible='1'/>
                            <field name= "developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                            <field name="assign_remarks" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Delegate' name="btn_delegate_developer" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
    </data>
</odoo>