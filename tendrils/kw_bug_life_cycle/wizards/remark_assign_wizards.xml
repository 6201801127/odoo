<odoo>
    <data>
        <!--  Remarks Wizard form view  -->
        <record id="kw_all_remark_wizards_form" model="ir.ui.view">
            <field name="name">Remark Wizards</field>
            <field name="model">kw_bug_remark_wizards</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Remark Wizards">
                    <sheet>
                        <group>
                            <field name= "given_time" attrs="{'invisible':[('invisible_boolean', '!=', True)], 'required':[('invisible_boolean', '=', True)]}"/>
                            <field name="invisible_boolean" invisible="1"/>
                            <field name="done_button_boolean" invisible="1"/>
                            <field name="close_button_boolean" invisible="1"/>
                            <field name="assigned_boolean" invisible="1"/>
                            <field name= "root_cause_and_solution" attrs="{'invisible':[('done_button_boolean', '!=', True)], 'required':[('done_button_boolean', '=', True)]}"/>
                            <field name= "time_taken" attrs="{'invisible':[('done_button_boolean', '!=', True)], 'required':[('done_button_boolean', '=', True)]}"/>
                            <field name= "remark"  required = 'True'/>
                            <field name="snap_shot" attrs="{'invisible':[('close_button_boolean', '!=', True), ('assigned_boolean', '!=', True)], 'required':['|', ('close_button_boolean', '=', True), ('assigned_boolean', '=', True)]}"/>
                            <field name="assigned_to_id" attrs="{'invisible':[('assigned_boolean', '!=', True)]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="bug_id" invisible="1"/>
                            <field name="project_id" invisible="1"/>
                        </group>
                        <group attrs="{'invisible':[('assigned_boolean', '!=', True)]}">
                             <h4 class="oe_form_required" style="color: red;">
                                <i>If "Assigned to" is left blank... The ticket will be assigned to your Test Lead.</i>
                            </h4>
                        </group>

                    </sheet>
                    <footer>
                        <button string='Submit' name="remark_reason" type="object" class="btn-primary" context="{'current_id':bug_id}"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="confirm_wizard_view1_form" model="ir.ui.view">
            <field name="name">Confirm</field>
            <field name="model">kw_bug_remark_wizards</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p style="font-size : 20px; text-align: center; ">
                                As you are Not filling 'Assign To', Please confirm you are unaware whom to assign.This ticket wiil be auto-assigned to the Test-lead(s) ?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <button string='OK' name="submit_confirm" type="object" class="btn-primary" context="{'button_name':'submit_confirm'}"/>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>