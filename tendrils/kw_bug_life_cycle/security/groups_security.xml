<odoo>
    <record model="ir.module.category" id="module_bug_life_cycle">
        <field name="name">Bug Life Cycle</field>
        <field name="description">Help You For Faster Bug Fix</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_report_manager_bug_life_cycle" model="res.groups">
        <field name="name">Report Manager</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_manager_bug_life_cycle" model="res.groups">
        <field name="name">Module Manager</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_user_bug_life_cycle" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>
    <record id="group_Test_lead_bug_life_cycle" model="res.groups">
        <field name="name">Test Lead</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_tester_bug_life_cycle" model="res.groups">
        <field name="name">Tester</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_ba_bug_life_cycle" model="res.groups">
        <field name="name">BA</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_pm_bug_life_cycle" model="res.groups">
        <field name="name">Project Manager</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_reviewer_bug_life_cycle" model="res.groups">
        <field name="name">Reviewer</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_module_lead_bug_life_cycle" model="res.groups">
        <field name="name">Module Lead</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>

    <record id="group_automation_bug_life_cycle" model="res.groups">
        <field name="name">Automation</field>
        <field name="category_id" ref="module_bug_life_cycle"/>
    </record>


