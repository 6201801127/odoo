    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('kw_bug_life_cycle.group_user_bug_life_cycle'))]"/>
    </record>

    <!--    record rule for bug life cycle -->

    <data noupdate="0">
        <record id="bug_life_cycle_personal_rule" model="ir.rule">
            <field name="name">Personal Tickets</field>
            <field ref="model_kw_raise_defect" name="model_id"/>
            <field name="domain_force">['|', ('create_uid','=',user.id), ('state', '!=', 'Draft')]</field>
            <field name="groups" eval="[(4, ref('group_user_bug_life_cycle'))]"/>
        </record>

        <record id="bug_life_cycle_manager_rule" model="ir.rule">
            <field name="name">All Tickets</field>
            <field ref="model_kw_raise_defect" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_manager_bug_life_cycle'))]"/>
        </record>
    </data>
</odoo>