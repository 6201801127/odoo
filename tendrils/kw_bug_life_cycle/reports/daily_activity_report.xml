<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_daily_activity_report_form" model="ir.ui.view">
            <field name="name">daily.activity.report.form</field>
            <field name="model">daily_activity_report</field>
            <field name="arch" type="xml">
                <form string="Daily Activity Report (DAR) - Automation">
                    <group>
                        <group>
                            <field name="logged_in_employee" readonly="1"/>
                            <field name="project_id"/>
                            <field name="activity_type" widget="selection"/>
                            <field name="module"/>
                            <field name="sub_module"/>
                            <field name="date"/>
                            <field name="requirement_count"/>
                            <field name="scenario_count"/>
                            <field name="tcw_tcrw_count"/>
                            <field name="tcw_tcrw_effort"/>
                            <field name="tce_tcre_count"/>
                            <field name="tce_tcre_effort"/>
                            <field name="defect_found"/>
                            <field name="activity_details"/>
                        </group>
                    </group>    
                    <group>    
                        <group string="TC Creation" col="3">
                            <field name="performance_test_script_preparation"/>
                            <field name="created_test_cases"/>
                            <field name="reviewed_test_cases"/>
                            <field name="updated_test_cases"/>
                            <field name="test_data_preparation"/>
                            <field name="automation_script_preparation"/>
                            <field name="automation_script_maintenance"/>
                            <field name="reviewed_automation_script"/>
                            <field name="database_query_writing"/>
                            <field name="database_query_reviewed"/>
                        </group>
    
                        <!-- TC Execution Section -->
                        <group string="TC Execution" col="3">
                            <field name="performance_test_script_execution"/>
                            <field name="executed_test_cases"/>
                            <field name="logged_defects_manual"/>
                            <field name="logged_defects_automation"/>
                            <field name="reviewed_defects"/>
                            <field name="retested_defects"/>
                            <field name="sanity_smoke_testing"/>
                            <field name="regression_testing_manual"/>
                            <field name="regression_testing_automation"/>
                            <field name="database_query_execution"/>
                        </group>
    
                        <!-- Miscellaneous Section -->
                        <group string="Miscellaneous" col="3">
                            <field name="task_planning_assignment"/>
                            <field name="test_report_preparation"/>
                            <field name="given_training"/>
                            <field name="attended_training"/>
                            <field name="documentation"/>
                            <field name="requirement_understanding"/>
                            <field name="knowledge_transfer_sharing"/>
                            <field name="question_preparation"/>
                            <field name="scrum_sprint_meeting"/>
                            <field name="email_communication"/>
                            <field name="general_meeting"/>
                        </group>

                    </group>
                    <footer>
                        <button string="Submit" type="object" class="oe_highlight"/>
                        <button string="Reset" type="reset" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="dar_report_view_action" model="ir.actions.act_window">
            <field name="name">DAR Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">daily_activity_report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem name="Daily Activity Report" id="dar_report_menu" parent="kw_bug_life_cycle.menu_root" action="kw_bug_life_cycle.dar_report_view_action" sequence="8"
                  groups="kw_bug_life_cycle.group_manager_bug_life_cycle,kw_bug_life_cycle.group_Test_lead_bug_life_cycle" active="false"/>
    </data>
</odoo>
