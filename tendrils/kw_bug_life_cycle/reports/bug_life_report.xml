<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="Bug_report_view_tree_view" model="ir.ui.view">
            <field name="name">Bug Report tree</field>
            <field name="model">life_cycle_bug_report</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="date"/>
                    <field name="number"/>
                    <field name="employee_id"/>
                    <field name="project_id" invisible="1"/>
                    <field name="module_id"/>
                    <field name="sub_module_name_id"/>
                    <field name="priority_id"/>
                    <field name="severity"/>
                    <field name="description"/>
                    <field name="assigned_by"/>
                    <field name="developer_id"/>
                    <field name="state"/>
                    <!-- <field name="screen_id"/> -->
                    <!-- <button name="bug_view_details_action_button" type="object"
                            string="View Details" class="oe_highlight"/> -->
                </tree>
            </field>
        </record>


        <record id="Bug_report_view_search" model="ir.ui.view">
            <field name="name">Bug Report Search</field>
            <field name="model">life_cycle_bug_report</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="employee_id"/>
                    <field name="project_id"/>
                    <field name="module_id"/>
                    <field name="developer_id"/>
                    <field name="sub_module_name_id"/>
                    <!-- <field name="screen_id"/> -->
                    <field name="date"/>
                    <field name="state"/>
                    <filter string="This Month" domain="[('date', 'like',context_today().strftime('%Y-%m'))]" name="this_month_bug_report"/>
                    <filter string="This Year" domain="[('date', 'like',context_today().strftime('%Y'))]" name="current_year_bug_report"/>
                    <filter string="Last Year" domain="[('date', 'like',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_bug_report"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_module_name" context="{'group_by': 'module_id'}" string="Global Link" />
                        <filter name="group_by_project_id" context="{'group_by': 'project_id'}" string="Project Name" />
                        <filter name="group_by_employee_id" context="{'group_by': 'employee_id'}" string="Assign By" />
                        <filter name="group_by_state" context="{'group_by': 'state'}" string="State" />
                    </group>
                </search>
            </field>
        </record>

        <record id="bug_report_view_action" model="ir.actions.act_window">
            <field name="name">Bug Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">life_cycle_bug_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="Bug_report_view_search" />
            <field name="context">{'delete':False }</field>
            <field name="domain">[('state','!=','Draft')]</field>
        </record>

        <menuitem name="Bug Report"
                  id="bug_report_config_menu"
                  parent="kw_bug_life_cycle.configuration_menu"
                  action="kw_bug_life_cycle.bug_report_view_action"
                  sequence="99"
                  active="false"
                  groups="kw_bug_life_cycle.group_manager_bug_life_cycle,kw_bug_life_cycle.group_Test_lead_bug_life_cycle"
        />

        <menuitem name="Bug Data Report" id="bug_report_new_menu" parent="kw_bug_life_cycle.menu_root" action="kw_bug_life_cycle.bug_report_view_action" sequence="7"
                  groups="kw_bug_life_cycle.group_manager_bug_life_cycle,kw_bug_life_cycle.group_Test_lead_bug_life_cycle"/>

    </data>
</odoo>
    
