<odoo>
    <data>
        <!-- kw_bug_life_cycle_conf list view -->

        <record model="ir.ui.view" id="kw_bug_life_cycle_conf_list">
            <field name="name">kw_bug_life_cycle_conf</field>
            <field name="model">kw_bug_life_cycle_conf</field>
            <field name="arch" type="xml">
                <tree delete="false" duplicate="false" class="bug_raise_tree">
                    <field name="project_id"/>
                    <field name="user_ids"/>
                    <field name="dev_test_ratio"/>
                </tree>
            </field>
        </record>

        <!-- kw_bug_life_cycle_conf form view  -->

        <record id="kw_bug_life_cycle_conf_form" model="ir.ui.view">
            <field name="name">kw_bug_life_cycle_conf__form</field>
            <field name="model">kw_bug_life_cycle_conf</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="sla_escalation" invisible="1"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <group string="Members">
                            <field name="user_ids" force_save='1'>
                                <tree editable="bottom" class="bug_raise_tree">
                                    <field name="employee_id" options="{'no_create': True, 'no_edit': True, 'no_open':True}"/>
                                    <field name="user_type"/>
                                    <field name="cycle_bug_conf_id" invisible="1"/>
                                </tree>
                                <form editable="bottom">
                                    <field name="employee_id" options="{'no_create': True, 'no_edit': True, 'no_open':True}"/>
                                    <field name="user_type"/>
                                    <field name="cycle_bug_conf_id" invisible="1"/>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_dashboard_defect_project_kanban" model="ir.ui.view">
            <field name="name">Dashboard</field>
            <field name="model">kw_bug_life_cycle_conf</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard" create="0" import="false">
                    <field name="project_id"/>
                    <field name="on_draft_defect_count"/>
                    <field name="onnew_defect_count"/>
                    <field name="onprogressive_defect_count"/>
                    <field name="onhold_defect_count"/>
                    <field name="ondone_defect_count"/>
                    <field name="onrejected_defect_count"/>
                    <field name="onclosed_defect_count"/>
                    <field name="ontotal_defect_count"/>
                    <field name="onalive_defect_count"/>
                    <field name="ondev_perc_data_count"/>
                    <field name="ontest_perc_data_count"/>
                    <field name="bug_days"/>
                    <field name="fixed_and_closed_count"/>
                    <field name="rejected_and_closed_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="custom-kanban-card" style="border-radius: 5px; overflow: hidden; background-image: linear-gradient(to left,  #59a985 , #59a985); height:285px">
                                <div class="custom-kanban-header">
                                    <div class="custom-kanban-title" style="text-align: center; font-weight: bolder; color: white; font-size:14px">
                                        <a>
                                            <field name="project_id" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; "/>
                                        </a>
                                    </div>
                                </div>
                                <div class="custom-kanban-content" style="text-align: center;">
                                    <div class="custom-kanban-buttons">
                                        <style>

                                            .custom-kanban-container {
                                            display: flex;
                                            justify-content: space-between;
                                            align-items: center;
                                            width: 100%;
                                            height: 18px;
                                            padding: 1px;
                                            color: black;
                                            font-size: 13px;
                                            }

                                            .custom-kanban-text {
                                            flex: 1;
                                            text-align: left;
                                            font-size: 13px;
                                            }
                                            .custom-kanban-container:hover {
                                            background-color: white;
                                            transform: scale(1.04);

                                            }
                                            .custom-kanban-container {
                                            transition: all 0.3s;
                                            transform-origin: center;
                                            }
                                        </style>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Draft</div>
                                            <t t-esc="record.on_draft_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">New/Reopen</div>
                                            <t t-esc="record.onnew_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Progressive</div>
                                            <t t-esc="record.onprogressive_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">On Hold</div>
                                            <t t-esc="record.onhold_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Fixed</div>
                                            <t t-esc="record.ondone_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Rejected</div>
                                            <t t-esc="record.onrejected_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Fixed and Closed</div>
                                            <t t-esc="record.fixed_and_closed_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Rejected and Closed</div>
                                            <t t-esc="record.rejected_and_closed_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Total Defects</div>
                                            <t t-esc="record.ontotal_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Alive</div>
                                            <t t-esc="record.onalive_defect_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Pending % at Dev</div>
                                            <t t-esc="record.ondev_perc_data_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Pending % at Test</div>
                                            <t t-esc="record.ontest_perc_data_count.value"/>
                                        </div>
                                        <div class="custom-kanban-container">
                                            <div class="custom-kanban-text">Bug Closure TAT</div>
                                            <t t-esc="record.bug_days.value"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="dashboard_view_search" model="ir.ui.view">
            <field name="name">dashboard.view.search</field>
            <field name="model">kw_bug_life_cycle_conf</field>
            <field name="arch" type="xml">
                <search>
                    <field name="project_id"/>
                    <filter string="My Dashboard"  domain="[('user_ids.employee_id.user_id', 'in', [uid])]" name="my_bug_dashboard"/>
                </search>
            </field>
        </record>


        <!-- kw_bug_life_cycle_conf Window action -->

        <record model="ir.actions.act_window" id="kw_bug_life_cycle_conf_action_window">
            <field name="name">Resource Addition Master</field>
            <field name="res_model">kw_bug_life_cycle_conf</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="kw_bug_life_cycle_conf_action_dashboard">
            <field name="name">Dashboard</field>
            <field name="res_model">kw_bug_life_cycle_conf</field>
            <field name="view_mode">kanban,form,search</field>
            <field name="context">{'search_default_my_bug_dashboard': 1}</field>
        </record>


        <!--      bug type tree view  -->

        <record model="ir.ui.view" id="kw_bug_type_list">
            <field name="name">kw_bug_type</field>
            <field name="model">bug_type_master</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="false" duplicate="false" class="bug_raise_tree">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- bug type Window action -->

        <record model="ir.actions.act_window" id="kw_bug_type_action_window">
            <field name="name">Bug Type Master</field>
            <field name="res_model">bug_type_master</field>
            <field name="view_mode">tree,form</field>
        </record>



        <!-- bug_module_master list view -->

        <record model="ir.ui.view" id="kw_bug_module_view_list">
            <field name="name">kw_bug_module_list</field>
            <field name="model">bug_module_master</field>
            <field name="arch" type="xml">
                <tree delete="false" duplicate="false" class="bug_raise_tree">
                    <field name="project_id"/>
                    <field name="module_name"/>
                    <field name="active" widget="boolean_toggle" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- form view of Module Master-->
        <record id="kw_bug_module_view_form" model="ir.ui.view">
            <field name="name">kw_bug_module_form</field>
            <field name="model">bug_module_master</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="module_name"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- bug Module Master  Window action -->

        <record model="ir.actions.act_window" id="kw_bug_module_action_window">
            <field name="name">Global Link Configuration</field>
            <field name="res_model">bug_module_master</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Tree view of Sub Module Master-->



        <record id="kw_sub_module_view_tree" model="ir.ui.view">
            <field name="name">Sub Module Master</field>
            <field name="model">bug_sub_module_master</field>
            <field name="arch" type="xml">
                <tree delete="false" duplicate="false" class="bug_raise_tree">
                    <field name= "project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="module_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="sub_module_name"/>
                    <field name="screen_ids"  invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- form view of Sub Module Master-->
        <record id="kw_sub_module_view_form" model="ir.ui.view">
            <field name="name">Sub Module Master</field>
            <field name="model">bug_sub_module_master</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name= "project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="module_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="sub_module_name"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <field name="screen_ids">
                            <tree editable="bottom" class="bug_raise_tree">
                                <field name="screen"/>
                                <field name="active" widget="boolean_toggle"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Sub Module Master  Window action -->

        <record model="ir.actions.act_window" id="kw_sub_module_action_window">
            <field name="name">Primary Link &amp; Screen Master</field>
            <field name="res_model">bug_sub_module_master</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
				   (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_bug_life_cycle.kw_sub_module_view_tree')}),
				   (0, 0, {'view_mode': 'form', 'view_id': ref('kw_bug_life_cycle.kw_sub_module_view_form')})]"/>
        </record>
    </data>
</odoo>