<odoo>
    <data>
        <!-- Tree View Of Severity Master -->
        <record id="kw_severity_view_tree" model="ir.ui.view">
            <field name="name">Severity Master</field>
            <field name="model">severity_master</field>
            <field name="arch" type="xml">
                <tree class="bug_raise_tree">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View Of Severity Master -->
        <record id="kw_severity_view_form" model="ir.ui.view">
            <field name="name">Severity Master</field>
            <field name="model">severity_master</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <!-- Severity Master Action -->

        <record model="ir.actions.act_window" id="kw_severity_action_window">
            <field name="name">Severity Master</field>
            <field name="res_model">severity_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

         <record id="kw_priority_view_tree" model="ir.ui.view">
            <field name="name">Priority Master</field>
            <field name="model">priority_master</field>
            <field name="arch" type="xml">
                <tree class="bug_raise_tree">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View Of Priority Master -->
        <record id="kw_priority_view_form" model="ir.ui.view">
            <field name="name">Priority Master</field>
            <field name="model">priority_master</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <!-- Priority Master Action -->

        <record model="ir.actions.act_window" id="kw_priority_action_window">
            <field name="name">Priority Master</field>
            <field name="res_model">priority_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>