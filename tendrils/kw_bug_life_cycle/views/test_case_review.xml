<odoo>
    <data>
        <record model="ir.ui.view" id="kw_test_case_review_tree">
            <field name="name">kw_test_case_review_tree</field>
            <field name="model">kw_test_case_review</field>
            <field name="arch" type="xml">
                <tree duplicate="false" delete="false" import="false" class="bug_raise_tree">
                    <field name="create_uid" string="Created By" readonly="1"/>
                    <field name="create_date" readonly="1"/>
                    <field name="testing_level"/>
                    <field name="project_id"/>
                    <field name="module_id"/>
                    <field name="review_data_line_ids" string="No of Records."/>
                    <field name="write_uid" readonly="1"/>
                    <field name="write_date" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- kw_test_case_exec form view -->

        <record model="ir.ui.view" id="kw_test_case_review_form">
            <field name="name">kw_test_case_review_form</field>
            <field name="model">kw_test_case_review</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form duplicate="false" delete="false">
                    <sheet>
                        <group string="Review">
                            <group style="background-color:#ebfdf8;">
                                <!-- <field name="fetch_bool" invisible="1"/> -->
                                <field name="testing_level" required='True' options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="project_id"  options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="module_id"  options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="fetch_from"   widget="radio" options="{'horizontal': True}"/>
                                <field name="fetch_bool" invisible="1"/>
                            </group>
                            <group>
                            </group>
                            <group>
                                <button string="Fetch" type="object" class="btn-danger slow-zoom" name="button_fetch_for_review" />
                            </group>
                        </group>
                        <field name="review_data_line_ids">
                            <tree editable="bottom" class="bug_raise_tree" delete="false" edit="true" create="false">
                                <field name="sl_no" readonly="0"/>
                                <field name="scenario_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="tc_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="pos_neg" readonly="1"/>
                                <field name="scenario" readonly="1"/>
                                <field name="test_data_action" readonly="1"/>
                                <field name="expectation" readonly="1"/>
                                <field name="result" readonly="1" required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="code" invisible="1"/>
                                <field name="actual" readonly="1"/>
                                <field name="bug_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="bug_id_status" widget="html" readonly="1" invisible="1"/>
                                <field name="case_execute_id" invisible="1"/>
                                <field name="mark_for_reg" groups="kw_bug_life_cycle.group_Test_lead_bug_life_cycle"/>
                                <field name="copy_for_uat" groups="kw_bug_life_cycle.group_tester_bug_life_cycle,kw_bug_life_cycle.group_Test_lead_bug_life_cycle"/>
                                <field name="tl_review" groups="kw_bug_life_cycle.group_Test_lead_bug_life_cycle"/>
                                <field name="is_invalid" groups="kw_bug_life_cycle.group_tester_bug_life_cycle,kw_bug_life_cycle.group_Test_lead_bug_life_cycle"/>
                                <field name="automatable" groups="kw_bug_life_cycle.group_automation_bug_life_cycle"/>
                                <field name="automated" groups="kw_bug_life_cycle.group_automation_bug_life_cycle"/>
                                <field name="automation_review" groups="kw_bug_life_cycle.group_automation_bug_life_cycle"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="sl_no" readonly="1"/>
                                    <field name="scenario_id" required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                    <field name="tc_id" readonly="1"/>
                                    <field name="pos_neg" readonly="1"/>
                                    <field name="scenario" readonly="1"/>
                                    <field name="test_data_action" readonly="1"/>
                                    <field name="expectation" readonly="1"/>
                                    <field name="actual" readonly="1"/>
                                    <field name="result" readonly="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                </group>
                            </form>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>



        <record model="ir.actions.act_window" id="kw_test_case_review_action_window">
            <field name="name">Test Case Review</field>
            <field name="res_model">kw_test_case_review</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>
