<odoo>
    <data>
        <!-- test_case upload tree view -->
        <record model="ir.ui.view" id="kw_use_case_mapping_tree">
            <field name="name">kw_use_case_mapping_tree</field>
            <field name="model">kw_use_case_mapping</field>
            <field name="arch" type="xml">
                <tree duplicate="false" delete='false' class="bug_raise_tree">
                    <field name="project_id"/>
                    <field name="module_id"/>
                    <field name="uc_line_ids"/>
                </tree>
            </field>
        </record>

        <!-- test_case upload form view -->

        <record model="ir.ui.view" id="kw_use_case_mapping_form">
            <field name="name">kw_use_case_mapping_form</field>
            <field name="model">kw_use_case_mapping</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                                <field name="module_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                                <field name='p_id' invisible='1' />
                            </group>
                            <group>
                            </group>
                            <group>
                                <button string="Fetch Unmapped UCs" type="object" class="oe_highlight" name="button_import_data"/>
                            </group>
                        </group>
                        <field name="uc_line_ids">
                            <tree editable="top" class="bug_raise_tree">
                                <field name="use_case_id"/>
                                <field name="module_id" widget="many2many_tags"/>
                            </tree>
                        </field>
                        <button string="Map" type="object" class="btn-success" name="button_generate_id"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Use case Mapping search view -->
        <record id="kw_use_case_mapping_search_view" model="ir.ui.view">
            <field name="name">kw_use_case_mapping_search_view</field>
            <field name="model">kw_use_case_mapping</field>
            <field name="arch" type="xml">
                <search>
                    <field name="project_id"/>
                    <field name="module_id"/>
                    <separator/>
                    <filter name="group_by_project" string="Project" context="{'group_by':'project_id'}" />
                    <filter name="group_by_module" string="Module" context="{'group_by':'module_id'}" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_use_case_mapping_action_window">
            <field name="name">Use Case Mapping</field>
            <field name="res_model">kw_use_case_mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="kw_use_case_mapping_search_view"/>
        </record>

    </data>
</odoo>
