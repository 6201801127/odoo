<odoo>
    <data>
        <!-- Tree View Of SLA Configuration -->
        <record id="kw_sla_config_view_tree" model="ir.ui.view">
            <field name="name">SLA Configuration</field>
            <field name="model">sla_config</field>
            <field name="arch" type="xml">
                <tree delete="false" duplicate="false" class="bug_raise_tree">
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View Of SLA Configuration -->
        <record id="kw_sla_config_view_form" model="ir.ui.view">
            <field name="name">SLA Configuration</field>
            <field name="model">sla_config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form delete="false" duplicate="false">
                    <sheet>
                        <group string="SLA Configuration">
                            <group>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <group string="Yes">
                            <group>
                            </group>
                            <field name="sla_config_time_ids">
                                <tree editable="bottom" create="false" delete="false" class="bug_raise_tree">
                                    <field name="from_state" readonly="1" force_save="1"/>
                                    <field name="to_state" readonly="1" force_save="1"/>
                                    <field name="time"/>
                                    <field name="sla_config_id" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                        <group string="No">
                            <group>
                            </group>
                            <field name="sla_config_time_no_ids">
                                <tree editable="bottom" create="false" delete="false" class="bug_raise_tree">
                                    <field name="from_state" readonly="1" force_save="1"/>
                                    <field name="to_state" readonly="1" force_save="1"/>
                                    <field name="time"/>
                                    <field name="sla_config_no_id" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                        <group string="N/A">
                            <group>
                            </group>
                            <field name="sla_config_time_na_ids">
                                <tree editable="bottom" create="false" delete="false" class="bug_raise_tree">
                                    <field name="from_state" readonly="1" force_save="1"/>
                                    <field name="to_state" readonly="1" force_save="1"/>
                                    <field name="time"/>
                                    <field name="sla_config_na_id" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- SLA Configuration Action -->

        <record model="ir.actions.act_window" id="kw_sla_config_action_window">
            <field name="name">SLA Configuration</field>
            <field name="res_model">sla_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>