<odoo>
    <data>
        <!-- list view -->

        <record model="ir.ui.view" id="kw_raise_list">
            <field name="name">kw_raise_list</field>
            <field name="model">kw_raise_defect</field>
            <field name="arch" type="xml">
                <tree import="false"  delete="false" class="bug_raise_tree">
                    <field name="open_date"/>
                    <field name="number"/>
                    <field name="employee_id" readonly="1"/>
                    <field name="department_id" readonly="1" invisible="1"/>
                    <field name="division" readonly="1" invisible="1"/>
                    <field name="users_email" readonly="1" invisible="1"/>
                    <field name="project_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1" invisible="1"/>
                    <field name="module_id"/>
                    <field name="sub_module_name_id"/>
                    <field name="priority_id" invisible='1'/>
                    <field name="bug_type"/>
                    <field name="step_to_reproduce_bug"/>
                    <field name="assigned_by"/>
                    <field name="developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                    <field name="pending_at" invisible="1"/>
                    <field name="defect_create_ids" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="status_of_bug"/>
                    <field name="bug_cycle" string="Cycle Completed"/>
                    <field name="my_project_boolean" invisible="1"/>
                    <button name="edit_bug_rec" string="View Details" type="object" class="btn_details"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_raise_list_all_project">
            <field name="name">kw_raise_list</field>
            <field name="model">kw_raise_defect</field>
            <field name="arch" type="xml">
                <tree import="false"  delete="false" duplicate="false" class="bug_raise_tree">
                    <field name="open_date"/>
                    <field name="number"/>
                    <field name="employee_id" readonly="1"/>
                    <field name="department_id" readonly="1" invisible="1"/>
                    <field name="division" readonly="1" invisible="1"/>
                    <field name="users_email" readonly="1" invisible="1"/>
                    <field name="project_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1" invisible="1"/>
                    <field name="module_id"/>
                    <field name="sub_module_name_id"/>
                    <field name="bug_type"/>
                    <field name="step_to_reproduce_bug"/>
                    <field name="priority_id" invisible='1'/>
                    <field name="assigned_by"/>
                    <field name="developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                    <field name="pending_at" invisible="1"/>
                    <field name="defect_create_ids" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="status_of_bug"/>
                    <field name="bug_cycle"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_raise_list_take_action">
            <field name="name">kw_raise_list</field>
            <field name="model">kw_raise_defect</field>
            <field name="arch" type="xml">
                <tree import="false" delete="false" duplicate="false" class="bug_raise_tree">
                    <field name="open_date"/>
                    <field name="number"/>
                    <field name="employee_id" readonly="1"/>
                    <field name="department_id" readonly="1" invisible="1"/>
                    <field name="division" readonly="1" invisible="1"/>
                    <field name="users_email" readonly="1" invisible="1"/>
                    <field name="project_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1" invisible="1"/>
                    <field name="module_id"/>
                    <field name="sub_module_name_id"/>
                    <field name="bug_type"/>
                    <field name="step_to_reproduce_bug"/>
                    <field name="priority_id" invisible='1'/>
                    <field name="assigned_by"/>
                    <field name="developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                    <field name="pending_at" invisible="1"/>
                    <field name="defect_create_ids" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="status_of_bug"/>
                    <field name="bug_cycle"/>
                    <field name="my_project_boolean" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->


        <record id="kw_raise_search_view" model="ir.ui.view">
            <field name="name">Raise Bug Search</field>
            <field name="model">kw_raise_defect</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="open_date"/>
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="division" />
                    <field name="users_email" />
                    <field name="project_id" />
                    <field name="developer_id" />
                    <field name="defect_create_ids" invisible="1"/>
                    <field name="state"/>
                    <field name="bug_type"/>
                    <field name="description"/>
                    <filter string="My Task" name="filter_self_task_record" domain="[('employee_id.user_id','=',uid)]"/>
                    <separator/>
                    <filter string="This Month" domain="[('open_date', 'like',context_today().strftime('%Y-%m'))]" name="this_month_raise_defect"/>
                    <separator/>
                    <filter string="This Year" domain="[('open_date', 'like',context_today().strftime('%Y'))]" name="current_year_bug_report"/>
                    <filter string="Last Year" domain="[('open_date', 'like',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_bug_report"/>
                    <separator/>
                    <filter string="New/Reopen" name="New" domain="[('state','=','New')]"/>
                    <filter string="Progressive" name="Progressive" domain="[('state','=','Progressive')]"/>
                    <filter string="Hold" name="Hold" domain="[('state','=','Hold')]"/>
                    <filter string="Done" name="Done" domain="[('state','=','Done')]"/>
                    <filter string="Rejected" name="Rejected" domain="[('state','=','Rejected')]"/>
                    <filter string="Closed" name="done" domain="[('state','=','Closed')]"/>



                    <group expand="0" string="Group By">
                        <filter name="group_by_project_id" context="{'group_by': 'project_id'}" string="Project Name" />
                        <filter name="group_by_state" context="{'group_by': 'state'}" string="State" />
                        <filter name="group_by_module" context="{'group_by': 'module_id'}" string="Global Link" />

                    </group>
                </search>
            </field>
        </record>


        <!--  form view  -->

        <record id="kw_raise_form" model="ir.ui.view">
            <field name="name">kw_raise_defect</field>
            <field name="model">kw_raise_defect</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form edit="false"  delete="false" duplicate="false">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="btn_submit" string="Submit" type="object" class="btn-success"
                                attrs="{'invisible':['|', ('state', 'not in', ['Draft']), ('raised_by_boolean_btn', '!=', True )]}"/>

                        <button name="btn_assign_wizard" string="Assign" type="object" class="btn-success" context="{'current_record':id}"
                                attrs="{'invisible':['|', ('state', 'not in', ['New']), '|',
                                ('developer_assign_boolean', '=', True), '&amp;', ('test_lead_boolean', '!=', True),
                                 ('module_lead_boolean', '!=', True)]}" />

                        <button name="btn_accept_ticket" string="Acknowledge As A Defect" type="object" class="btn-success"
                                attrs="{'invisible':['|', ('state', 'in', ['Draft','Progressive','Hold', 'Done' , 'Rejected', 'Closed']), '|',
                                ('developer_assign_boolean', '=', False), ('developer_button_boolean', '=', False)]}" context="{'current_record':id, 'default_bug_id':id}"/>

                        <button name="btn_done" string="Fixed &amp; Deployed In Test Server" type="object" class="btn-success"
                                attrs="{'invisible':['|', ('state', 'in', ['Draft','Progressive','Hold', 'Done' , 'Rejected', 'Closed']), '|',
                                ('developer_assign_boolean', '=', False), ('developer_button_boolean', '=', False)]}" context="{'current_record':id, 'default_bug_id':id}"/>

                        <button name="btn_forward_stage" string="Forward" type="object"
                                class="btn-success" attrs="{'invisible':['|', ('state', 'in', ['Draft','Progressive','Hold', 'Done' , 'Rejected', 'Closed']), '|',
                                ('developer_assign_boolean', '=', False), ('developer_button_boolean', '=', False)]}" context="{'current_record':id, 'default_bug_id':id}"/>

                        <button name="btn_hold" string="Hold" type="object" class="btn-success"
                                attrs="{'invisible':['|', ('state', 'not in', ['Progressive']),
                                 ('developer_hold_button', '!=', True)]}" context="{'current_record':id, 'default_bug_id':id}"/>

                        <button name="btn_goto_inprogress_stage" string="GoTo In Progressive Stage" type="object"
                                class="btn-success" attrs="{'invisible':['|', ('state', 'not in', ['Hold']), ('developer_go_to_inp_button', '!=', True)]}"
                                context="{'current_record':id, 'default_bug_id':id}"/>
                        <button name="btn_done" string="Fixed &amp; Deployed In Test Server" type="object" class="btn-success"
                                attrs="{'invisible':['|', ('state', 'not in', ['Progressive']), ('developer_hold_button', '!=', True)]}" context="{'current_record':id, 'default_bug_id':id}"/>

                        <button name="btn_cancel" string="Reject" type="object" class="btn-danger"
                                attrs="{'invisible':['|', ('state', 'not in', ['New']), ('developer_button_boolean', '!=', True)]}" context="{'current_record':id, 'default_bug_id':id}"/>

                        <button name="btn_reopen_stage" string="Reopen Ticket" type="object"
                                class="btn-success" attrs="{'invisible':['|', ('state', 'not in', ['Closed', 'Done', 'Rejected']), '&amp;',
                              ('test_lead_org_boolean', '!=', True), ('raised_by_boolean_btn', '!=', True)]}"
                                context="{'current_record':id, 'default_bug_id':id}"/>
                        <button name="btn_close_stage" string="Close" type="object"
                                class="btn-success" attrs="{'invisible':['|', ('state', 'not in', ['Done', 'Rejected']), '&amp;',
                              ('test_lead_org_boolean', '!=', True), ('raised_by_boolean_btn', '!=', True )]}" context="{'current_record':id, 'default_bug_id':id}"
                        />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="number"  string="Defect ID" style="font-size:30px;color:rgb(95, 196, 234);"/>
                            <h1>
                                <field name="number" nolabel="1"/>
                            </h1>
                        </div>
                        <group style="background-color:#ebfdf8;">
                            <group>
                                <field name="employee_id" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="designation" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="department_id" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="division" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="emp_location" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="open_date"/>
                                <field name="year_of_experience"/>
                                <field name="bug_con_id" invisible="1"/>
                                <field name="assign_employee_ids" widget="many2many_tags" invisible="1"/>
                                <field name="my_project_boolean" invisible="1"/>
                                <field name="is_it_slipped_in_unit_testing" options="{'horizontal': true}" attrs="{'readonly':[('state', '!=', 'Draft')]}" required="1"/>
                                <field name="issue_duplicate" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i>1. Are you in Pre-UAT or UAT phase?</i>
                                </span><br/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i style="margin-left: 105px;">(OR)</i>
                                </span><br/>
                                <field name="sla_question"  options="{'horizontal': true}" attrs="{'readonly':[('state', '!=', 'Draft')]}" required="1"/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i>2. Is the application going to be LIVE very soon (within a week)?/Already Live.</i>
                                </span><br/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i style="margin-left: 105px;">(OR)</i>
                                </span><br/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i>3. DEMO to the client in the next couple of days?</i>
                                </span>
                            </group>
                            <group>
                                <field name="project_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"
                                       attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name ="application" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="testing_level" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="module_id" domain="[('project_id', '=', bug_con_id)]"
                                       options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="sub_module_name_id"  domain="[('module_id', '=', module_id)]" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="screen_id"  domain="[('reg_sub_module_id', '=', sub_module_name_id)]" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="navigation" widget="url" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="severity" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':['|', ('state', 'in', ['New', 'Progressive','Hold', 'Done', 'Closed', 'Rejected']), ('test_lead_close_boolean', '=', True)]}"/>
                                <field name="priority_id"  options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':['|', ('state', 'in', ['New', 'Progressive','Hold', 'Done', 'Closed', 'Rejected']), ('test_lead_close_boolean', '=', True)]}"/>
                                <field name="developer_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" string="Assigned To"
                                       attrs="{'readonly':['|', ('state', 'in', ['New','Progressive', 'Hold', 'Done', 'Cancel']), '|',
                                ('developer_assign_boolean', '=', True), '&amp;', ('test_lead_boolean', '!=', True), '&amp;',
                                 ('module_lead_boolean', '!=', True), ('dev_filed_boolean', '!=', True)]}" force_save="1" context="{'test':'okk', 'project_id': project_id, 'bug_con_id': bug_con_id}"/>
                                <field name="developer_assign_boolean" invisible="1"/>
                                <field name="test_lead_org_boolean" invisible="1"/>
                                <field name="test_lead_close_boolean" invisible="1"/>
                                <field name="description" invisible="1"/>
                                <field name="pending_at" invisible="1" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" context="{'test':'okk', 'project_id': project_id, 'bug_con_id': bug_con_id}"/>
                                <field name="test_lead_boolean" invisible="1"/>
                                <field name="manager_id" force_save="1" invisible="1"/>
                                <field name="developer_button_boolean" invisible="1"/>
                                <field name="developer_hold_button" invisible="1"/>
                                <field name="developer_go_to_inp_button" invisible="1"/>
                                <field name="developer_done_inp_button" invisible="1"/>
                                <field name="raised_by_boolean_btn" invisible="1"/>
                                <field name="dev_filed_boolean" invisible="1"/>
                                <field name="module_lead_boolean" invisible="1"/>
                                <field name="ui_control_name" string="Associated Field / UI &amp; Test Data" placeholder="" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="end_user" placeholder="(Also,Provide user id and credentials for the given End User)" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="project_emp_ids" widget="many2many_tags" force_save="1" invisible="1"/>
                                <field name="my_project_employee_ids" widget="many2many_tags" invisible="1"/>
                                <field name="bug_con_id" invisible='1'/>
                                <field name="required_resolation_time" invisible="1"/>
                                <field name="required_resolation_time_given_on" invisible="1"/>
                                <field name="submit_bug_date" invisible="1"/>
                                <field name="assign_bug_date" invisible="1"/>
                                <field name="accept_bug_date" invisible="1"/>
                                <field name="reject_bug_date" invisible="1"/>
                                <field name="hold_bug_date" invisible="1"/>
                                <field name="go_to_inprogress_bug_date" invisible="1"/>
                                <field name="fixed_bug_date" invisible="1"/>
                                <field name="reopen_bug_date" invisible="1"/>
                                <field name="closed_bug_date" invisible="1"/>
                                <field name="forward_bug_date" invisible="1"/>
                                <field name="ts_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1"/>
                                <field name="scenario_description" readonly="1"/>
                                <field name="tc_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1"/>
                                <field name="tc_description" readonly="1"/>
                            </group>
                        </group>
                        <group string="Step To Reproduce">
                            <field name="step_to_reproduce_bug" widget="html" string="Details" attrs="{'readonly' : [('state', '!=', 'Draft')]}" required="1">
                            </field>
                        </group>
                        <group col='3' string='Defects'>
                            <group>
                                <field name="bug_type" attrs="{'readonly':[('state', '!=', 'Draft')]}" options="{'no_create': True, 'no_open': True, 'no_edit': True}" required='1'/>
                            </group>
                            <group>
                                <field name="description" attrs="{'readonly':[('state', '!=', 'Draft')]}" required='1'/>
                            </group>
                            <group>
                                <field name="snap_shot" attrs="{'readonly':[('state', '!=', 'Draft')]}" string="Upload Snap (jpg/png/zip/pdf, 5MB max)" required='1'/>
                            </group>
                        </group>
                        <group string="Defects" invisible="1">
                            <field name="defect_create_ids" nolabel="1" required='1' attrs="{'readonly' : [('state', '!=', 'Draft')]}">
                                <tree editable="bottom" class="bug_raise_tree">
                                    <field name="module_name" invisible="1"/>
                                    <field name="bug_type" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                    <field name="description"/>
                                    <field name="snap_shot" string="Upload Snap (jpg/png/zip/pdf, 2MB max)"/>
                                </tree>
                                <form>
                                    <field name="module_name" invisible="1"/>
                                    <field name="bug_type" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                    <field name="description"/>
                                    <field name="snap_shot"/>
                                </form>
                            </field>
                        </group>
                        <group>
                            <group string="Action Log Table">
                                <field name="action_log_table_ids" nolabel="1" readonly="1" style="padding-right: 50px;pointer-events:none;">
                                    <tree editable="bottom" class="bug_raise_tree">
                                        <field name="date"/>
                                        <field name="action_taken_by"/>
                                        <field name ="designation"/>
                                        <field name="remark"/>
                                        <field name="state"/>
                                        <field name="bug_con_id" invisible='1'/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Snap Log Table">
                                <field name="snap_action_log_ids" nolabel="1" readonly="1" style="padding-left: 46px;">
                                    <tree editable="bottom" class="bug_raise_tree">
                                        <field name="date" style="pointer-events:none;"/>
                                        <field name="snap_upload_by" style="pointer-events:none;"/>
                                        <field name ="state" style="pointer-events:none;"/>
                                        <field name="snap_shot" invisible='1'/>
                                        <field name="snap_bug_id" invisible='1'/>
                                        <button name="get_snap_download" type="object" class="btn_details fa fa-download"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--       Form view all project-->

        <record id="kw_raise_form_all_project" model="ir.ui.view">
            <field name="name">kw_raise_defect</field>
            <field name="model">kw_raise_defect</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form edit="false"  delete="false" duplicate="false">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="number"  string="Defect ID" style="font-size:30px;color:rgb(95, 196, 234);"/>
                            <h1>
                                <field name="number" nolabel="1"/>
                            </h1>
                        </div>
                        <group style="background-color:#ebfdf8;">
                            <group>
                                <field name="employee_id" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="designation" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="department_id" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="division" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="emp_location" readonly="1" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"/>
                                <field name="open_date"/>
                                <field name="year_of_experience"/>
                                <field name="bug_con_id" invisible="1"/>
                                <field name="is_it_slipped_in_unit_testing" options="{'horizontal': true}" attrs="{'readonly':[('state', '!=', 'Draft')]}" required="1"/>
                                <field name="issue_duplicate" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i>1. Are you in Pre-UAT or UAT phase?</i>
                                </span><br/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i style="margin-left: 105px;">(OR)</i>
                                </span><br/>
                                <field name="sla_question"  options="{'horizontal': true}" attrs="{'readonly':[('state', '!=', 'Draft')]}" required="1"/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i>2. Is the application going to be LIVE very soon (within a week)?/Already Live.</i>
                                </span><br/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i style="margin-left: 105px;">(OR)</i>
                                </span><br/>
                                <span style='text-align:right;color:red;font-weight:bold; font-size:15px; margin-bottom:0'>
                                    <i>3. DEMO to the client in the next couple of days?</i>
                                </span>
                            </group>
                            <group>
                                <field name="project_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" force_save="1"
                                       attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name ="application" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="testing_level" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="module_id" domain="[('project_id', '=', bug_con_id)]"
                                       options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="sub_module_name_id"  domain="[('module_id', '=', module_id)]" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="screen_id"  domain="[('reg_sub_module_id', '=', sub_module_name_id)]" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="navigation" widget="url" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="severity" options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="priority_id"  options="{'no_create': True, 'no_open': True, 'no_edit': True}" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="developer_id" readonly="1"/>
                                <field name="ui_control_name" string="Associated Field / UI &amp; Test Data" placeholder="" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                                <field name="end_user" placeholder="(Also,Provide user id and credentials for the given End User)" attrs="{'readonly':[('state', '!=', 'Draft')]}"/>
                            </group>
                        </group>
                        <group string="Step To Reproduce">
                            <field name="step_to_reproduce_bug" widget="html" string="Details" attrs="{'readonly' : [('state', '!=', 'Draft')]}" required="1">
                            </field>
                        </group>
                        <group col='3' string='Defects'>
                            <group>
                                <field name="bug_type" attrs="{'readonly':[('state', '!=', 'Draft')]}" options="{'no_create': True, 'no_open': True, 'no_edit': True}" required='1'/>
                            </group>
                            <group>
                                <field name="description" attrs="{'readonly':[('state', '!=', 'Draft')]}" required='1'/>
                            </group>
                            <group>
                                <field name="snap_shot" attrs="{'readonly':[('state', '!=', 'Draft')]}" string="Upload Snap (jpg/png/zip/pdf, 5MB max)" required='1'/>
                            </group>
                        </group>
                        <group string="Defects" invisible="1">
                            <field name="defect_create_ids" nolabel="1" required='1' attrs="{'readonly' : [('state', '!=', 'Draft')]}">
                                <tree editable="bottom" class="bug_raise_tree">
                                    <field name="module_name" invisible="1"/>
                                    <field name="bug_type" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                    <field name="description"/>
                                    <field name="snap_shot"/>
                                </tree>
                                <form>
                                    <field name="module_name" invisible="1"/>
                                    <field name="bug_type" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                    <field name="description"/>
                                    <field name="snap_shot"/>
                                </form>
                            </field>
                        </group>
                        <group>
                            <group string="Action Log Table">
                                <field name="action_log_table_ids" nolabel="1" readonly="1" style="padding-right: 50px;pointer-events:none;">
                                    <tree editable="bottom" class="bug_raise_tree">
                                        <field name="date"/>
                                        <field name="action_taken_by"/>
                                        <field name ="designation"/>
                                        <field name="remark"/>
                                        <field name="state"/>
                                        <field name="bug_con_id" invisible='1'/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Snap Log Table">
                                <field name="snap_action_log_ids" nolabel="1" readonly="1">
                                    <tree editable="bottom" class="bug_raise_tree">
                                        <field name="date"/>
                                        <field name="snap_upload_by"/>
                                        <field name ="state"/>
                                        <field name="snap_shot"/>
                                        <field name="snap_bug_id" invisible='1'/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

