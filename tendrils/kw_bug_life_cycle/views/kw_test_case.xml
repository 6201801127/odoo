<odoo>
    <data>
        <template id="assets_backend" name="Assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/kw_bug_life_cycle/static/src/js/tree_view_buttons.js"></script>
            </xpath>
        </template>
        <!-- test_case upload tree view -->
        <record model="ir.ui.view" id="kw_test_case_upload_tree">
            <field name="name">kw_test_case_upload_tree</field>
            <field name="model">kw_test_case_upload</field>
            <field name="arch" type="xml">
                <tree duplicate="false" delete="false" import="false" class="bug_raise_tree">
                    <field name="test_suite_name"/>
                    <field name="test_suite" invisible="1"/>
                    <field name="create_uid" string="Created By" readonly="1"/>
                    <field name="testing_level"/>
                    <field name="project_id"/>
                    <field name="module_id"/>
                    <field name="file" invisible="1"/>
                    <field name="data_line_ids" string="No of records."/>
                    <field name="tc_id_generated" string="TC ID Generated"/>
                    <field name="write_uid" string="Last Updated By"/>
                </tree>
            </field>
        </record>

        <!-- test_case upload form view -->

        <record model="ir.ui.view" id="kw_test_case_upload_form">
            <field name="name">kw_test_case_upload_form</field>
            <field name="model">kw_test_case_upload</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form duplicate="false" delete="false">
                    <sheet>
                        <group string="Test Case Details">
                            <group style="background-color:#ebfdf8;">
                                <field name="test_suite"/>
                                <field name="testing_level" required='True' options="{'no_open': True, 'no_create': True, 'no_edit': True}" attrs="{'readonly':[('file_import_boolean','=',True)]}"/>
                                <field name='p_id' invisible='1'/>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" attrs="{'readonly':[('file_import_boolean','=',True)]}"/>
                                <field name="module_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" attrs="{'readonly':[('file_import_boolean','=',True)]}"/>
                                <field name="test_suite_name"/>
                                <field name="generate_id_add_line_visible_boolean" invisible="1"/>
                                <field name="file_import_boolean" invisible="1"/>
                                <label for="file" string="File" />
                                <div>
                                    <field name="file" attrs="{'readonly':[('file_import_boolean','=',True)]}" class="oe_inline" filename="file_name"/> <span style="color:red">(Only .csv format are allowed.)</span>
                                </div>
                                <button string="Import" attrs="{'invisible':[('file_import_boolean','=',True)]}" type="object" class="oe_highlight" name="button_import_data"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                            <group>
                            </group>
                            <group>
                                <button string="Generate IDS" type="object" class="btn-success slow-zoom" attrs="{'invisible':[('generate_id_add_line_visible_boolean','!=',True)]}" name="button_generate_id"/>
                            </group>
                        </group>
                        <field name="data_line_ids">
                            <tree editable="bottom" class="bug_raise_tree" create="false">
                                <field name="sl_no" attrs="{'readonly': [('restrict_delete_bool', '=', True)]}"/>
                                <field name="sub_reference" />
                                <field name="scenario_id"  required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="tc_id" readonly="1"/>
                                <field name="pos_neg" required="1"/>
                                <field name="scenario" required="1" readonly="1"/>
                                <field name="test_case_description" required="1"/>
                                <field name="test_data_action" required="1"/>
                                <field name="expectation" required="1"/>
                                <field name="restrict_delete_bool" invisible="1"/>
                                <field name="case_upload_id" invisible="1"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="sl_no" readonly="1"/>
                                    <field name="sub_reference" readonly="1"/>
                                    <field name="scenario_id" required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                    <field name="tc_id" readonly="1"/>
                                    <field name="pos_neg" required="1" readonly="1"/>
                                    <field name="scenario" required="1" readonly="1"/>
                                    <field name="test_case_description" required="1" readonly="1"/>
                                    <field name="test_data_action" required="1" readonly="1"/>
                                    <field name="expectation" required="1" readonly="1"/>
                                    <field name="restrict_delete_bool" invisible="1"/>
                                </group>
                            </form>
                        </field>
                        <button string="Add Line" attrs="{'invisible':[('generate_id_add_line_visible_boolean','!=',True)]}" context="{'current_record':id}" type="object" style="background-color:blue; color:white;" name="action_open_wizard"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Test case upload search view -->
        <record id="kw_test_case_upload_search_view" model="ir.ui.view">
            <field name="name">kw_use_case_mapping_search_view</field>
            <field name="model">kw_test_case_upload</field>
            <field name="arch" type="xml">
                <search>
                    <field name="testing_level"/>
                    <field name="project_id"/>
                    <field name="module_id"/>
                    <separator/>
                    <filter name="group_by_project" string="Project" context="{'group_by':'project_id'}" />
                    <filter name="group_by_module" string="Global Link" context="{'group_by':'module_id'}"/>
                    <filter name="group_by_level" string="Testing Level" context="{'group_by':'testing_level'}"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_test_case_upload_action_window">
            <field name="name">Upload Test Case</field>
            <field name="res_model">kw_test_case_upload</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="kw_test_case_upload_search_view"/>
            <field name="domain">[('create_uid', '=', uid)]</field>
        </record>

        <!--        Form View of View  Test Case Upload -->

        <record model="ir.ui.view" id="kw_test_case_upload_view_form">
            <field name="name">kw_test_case_upload_form</field>
            <field name="model">kw_test_case_upload</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Test Case Details">
                            <group style="background-color:#ebfdf8;">
                                <field name="testing_level" required='True' options="{'no_open': True, 'no_create': True, 'no_edit': True}" attrs="{'readonly':[('file_import_boolean','=',True)]}"/>
                                <field name='p_id' invisible='1'/>
                                <field name="project_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" attrs="{'readonly':[('file_import_boolean','=',True)]}"/>
                                <field name="module_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" attrs="{'readonly':[('file_import_boolean','=',True)]}"/>
                                <field name="file_import_boolean" invisible="1"/>
                                <label for="file" string="File" />
                                <div>
                                    <field name="file" attrs="{'readonly':[('file_import_boolean','=',True)]}" class="oe_inline" filename="file_name"/> <span style="color:red">(Only .csv format are allowed.)</span>
                                </div>
                                <!--                                <button string="Import" type="object" class="oe_highlight" name="button_import_data" attrs="{'invisible':[('file_import_boolean','=',True)]}"/>-->
                                <field name="file_name" invisible="1"/>
                            </group>
                            <group>
                            </group>
                            <group>
                                <!--                                <button string="Generate IDS" type="object" class="btn-success slow-zoom" name="button_generate_id"/>-->
                            </group>
                        </group>
                        <field name="data_line_ids">
                            <tree editable="bottom" class="bug_raise_tree" create="false">
                                <field name="sl_no" attrs="{'readonly': [('restrict_delete_bool', '=', True)]}"/>
                                <field name="sub_reference" />
                                <field name="scenario_id"  required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="tc_id" readonly="1"/>
                                <field name="pos_neg" required="1"/>
                                <field name="scenario" required="1" readonly="1"/>
                                <field name="test_case_description" required="1"/>
                                <field name="test_data_action" required="1"/>
                                <field name="expectation" required="1"/>
                                <field name="restrict_delete_bool" invisible="1"/>
                                <field name="case_upload_id" invisible="1"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="sl_no" readonly="1"/>
                                    <field name="sub_reference" readonly="1"/>
                                    <field name="scenario_id" required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                                    <field name="tc_id" readonly="1"/>
                                    <field name="pos_neg" required="1" readonly="1"/>
                                    <field name="scenario" required="1" readonly="1"/>
                                    <field name="test_case_description" required="1" readonly="1"/>
                                    <field name="test_data_action" required="1" readonly="1"/>
                                    <field name="expectation" required="1" readonly="1"/>
                                    <field name="restrict_delete_bool" invisible="1"/>
                                </group>
                            </form>
                        </field>
                        <!--                        <button string="Add Line" context="{'current_record':id}" type="object" style="background-color:blue; color:white;" name="action_open_wizard"/>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--        View Test Case Upload -->

        <record model="ir.actions.act_window" id="kw_test_case_view_action_window">
            <field name="name">View Test Case</field>
            <field name="res_model">kw_test_case_upload</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="kw_test_case_upload_search_view"/>
            <field name="view_ids" eval="[(5, 0, 0),
                     (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_test_case_upload_tree')}),
                     (0, 0, {'view_mode': 'form', 'view_id': ref('kw_test_case_upload_view_form')})]"/>
            <field name="context">{'create':False, 'edit':False, 'import':False, 'export': False, 'delete':False, 'group_by':'project_id', 'act_permission':True}</field>
        </record>


        <!-- Add Test Case Line Wizard View -->
        <record id="view_kw_test_case_line_wizard_form" model="ir.ui.view">
            <field name="name">kw.test.case.line.wizard.form</field>
            <field name="model">kw_test_case_line_wizard</field>
            <field name="arch" type="xml">
                <form string="Add Test Case Line">
                    <group>
                        <group>
                            <field name="testing_level" invisible="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                            <field name="project_id" invisible="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                            <field name="module_id" invisible="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly="1"/>
                            <field name="sub_reference" required="1"/>
                            <field name="scenario_id" required="1" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            <field name="pos_neg" required="1"/>
                            <field name="test_case_description" required="1"/>
                            <field name="test_data_action" required="1"/>
                            <field name="expectation" required="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button name="action_add_line" string="Add Line" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
