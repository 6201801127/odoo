<odoo>
    <data>
        <record id="automation_group_config_tree" model="ir.ui.view">
            <field name="name">automation_group_config_tree</field>
            <field name="model">automation_group_config</field>
            <field name="arch" type="xml">
                <tree delete='0' duplicate='0' class="bug_raise_tree">
                    <field name="testing_team_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="automation_group_config_form" model="ir.ui.view">
            <field name="name">automation_group_config_form</field>
            <field name="model">automation_group_config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form delete="0" duplicate="0">
                    <sheet>
                        <group>
                            <field name="testing_team_ids">
                                <tree>
                                    <field name="name" readonly="1"/>
                                    <field name="emp_code" readonly="1"/>
                                    <field name="practise" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="automation_group_config_action">
            <field name="name">Tagging of Automation Resource</field>
            <field name="res_model">automation_group_config</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>