<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings__outlook_calendar_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.outlook.calendar.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="87"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Meeting Schedule" string="Meeting Schedule" data-key="kw_meeting_zoom_integration"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>Microsoft Outlook Integration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Outlook configuration API key" id="outlook_configuration_api_key">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Client ID</span>
                                <div class="text-muted">Set the API Key for Microsoft Outlook Integration</div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="outlook_client_id" string="API Key" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="outlook_client_id" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                       <div class="col-12 col-lg-12 o_setting_box" title="Microsoft Outlook Integration API Secret" id="Microsoft_Outlook_Integration_api_secret">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Secret ID</span>
                                <div class="text-muted">Set the API secret for Microsoft Outlook Integration</div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="outlook_client_secret" string="API Secret" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="outlook_client_secret" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
