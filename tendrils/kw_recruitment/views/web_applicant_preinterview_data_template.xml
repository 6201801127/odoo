<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="web_applicant_page_template" model="website.page">
            <field name="name">Applicant page</field>
            <field name="website_published">True</field>
            <field name="url">/applicant-enrollment</field>
            <field name="type">qweb</field>
            <field name="key">kw_recruitment.web_applicant_page</field>
            <field name="arch" type="xml">
                <t t-name="kw_recruitment.kwinterview_applicant_template">
                    <t t-call="website.layout">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-sm-offset-6 col-md-7">
                                    <div class="card py-4 pl-5 pr-5">
                                        <div class="card-body">
                                            <form name="frm_applicant" id="frm_applicant" class="form-horizontal" method="post" action="javascript:void(0)" autocomplete="off">
                                                <div class="md-form">
                                                    <input type="text" class="form-control txtvalid"  id="txtMobNumber" name="txtMobNumber" maxlength='10' minlength='10'/>
                                                    <label for="txtMobNumber" class="font-weight-light reg"> Your Mobile Number </label>
                                                    <span id="errspan" class="text-warning"/>
                                                </div>

                                                <div class="d-flex justify-content-center">
                                                    <div class="col-sm-12 text-center">
                                                        <button type="submit" class="btn btn-warning font-weight-bold" id="btnSubmitMobileno"> Submit </button>
                                                        <button type="reset" class="btn btn-danger closepage font-weight-bold"> Reset </button>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="OTPnumber" tabindex="-1" role="dialog" aria-labelledby="OnboardingOTP" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered modal-primary" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header text-center">
                                                                <h4 class="modal-title w-100 font-weight-bold"> OTP Verification </h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span>&amp;times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body mx-3" id="popup">
                                                                <div class="text-center">
                                                                    <span class="text-danger" id="desc"/>
                                                                </div>
                                                                <div class="md-form mx-5">
                                                                    <input type="text" class="form-control txtvalid otptext" id="txtOtpNum" name="txtOtpNum" maxlength='4' />
                                                                    <label for="txtOtpNum" class="font-weight-bold grey-text reg"> Enter OTP </label>
                                                                    <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                                    <div class="text-left mx-1" id="resultdata"/>
                                                                </div>
                                                                <div class="text-left mx-5">
                                                                    <label for="Time Left" class="col-form-label"> Time Left: </label> &amp;emsp;
                                                                    <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer d-flex justify-content-between">
                                                                <button type="button" class="btn btn-success font-weight-bold" id="resendotp"> Resend OTP</button>
                                                                <button type="button" class="btn btn-primary font-weight-bold" id="btnSubmit">Submit</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="oe_structure"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>

