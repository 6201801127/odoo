<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="jd_skills_master_tree" model="ir.ui.view">
            <field name="name">jd_skills_master_tree</field>
            <field name="model">jd_skills_master</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="JD Skills" editable="top">
                    <field name="skill" required="1"/>
                    <field name="skill_code" readonly="1" invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="jd_skills_master_action_window" model="ir.actions.act_window">
            <field name="name">JD Skills</field>
            <field name="res_model">jd_skills_master</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="jd_skills_master_action_menu"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  name="JD Skills"
                  sequence="605"
                  action="jd_skills_master_action_window"/>

    </data>
</odoo>
