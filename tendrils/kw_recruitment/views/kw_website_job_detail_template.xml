		<template id="kw_view_job_detail" inherit_id="website_hr_recruitment.detail">
			<xpath expr="//div[@id='wrap']" position="replace">
				<div id="wrap" class="js_hr_recruitment">
					<div class="job-details">
						<div class="container">
							<div class="Applynow-section">
								<div>
									<h1 class="font-weight-bold" t-field="job.title"/>
									<div class="mt-1 mb-3">
										<span class="pr-4 pb-4">
											<i class="fa fa-map-marker mr-2" aria-hidden="false"/>
											<t t-if="job.address_id and len(job.address_id) &gt; 1">
												<t t-esc="job.address_id[0].name"/>
												<t t-foreach="job.address_id[1:]" t-as="loc">
													<t t-esc="' / '+loc.name"/>
												</t>
											</t>

											<t t-else="">
												<t t-esc="job.address_id[0].name"/>
											</t>
										</span>
										<span class="span-block" t-if="job.industry_type">
											<i class="fa fa-folder-o mr-1" aria-hidden="false"/>
											<t t-esc="job.industry_type.name"/>
										</span>
									</div>
									<h5 class="font-weight-bold" t-if="job.job_code">
										Job ID:
										<span t-field="job.job_code"/>
									</h5>
								</div>
							</div>
							<div class="Description-section">
								<div class="row">
									<div class="col-lg-71 col-md-121 col-sm-12">
										<div class="job-description">
											<h3 class="font-weight-bold">Job Description</h3>
											<div t-raw="job.description"/>

											<h3 class="font-weight-bold">Candidate Profile</h3>
											<div t-raw="job.candidate_profile"/>

											<div class="mb-3" t-if="job.qualification">
												<span class="font-weight-bold">Qualification:</span>
												<span>
													<t t-if="len(job.qualification) &gt; 1">
														<t t-esc="job.qualification[0].name"/>
														<t t-foreach="job.qualification[1:]" t-as="qual">
															<t t-esc="' / '+qual.name"/>
														</t>
													</t>

													<t t-else="">
														<t t-esc="job.qualification[0].name"/>
													</t>
												</span>
											</div>
											<!-- <div class="mb-3" t-if="job.summary">
												<span class="font-weight-bold">Responsibility:</span>
												<span><t t-esc="job.summary"/></span>
											</div> -->
											<t t-if="job.min_exp_year and int(job.min_exp_year) &gt; 0 and job.max_exp_year and int(job.max_exp_year) &gt; 0">
												<div class="mb-3">
													<span class="font-weight-bold">Experience:</span>
													<span>
														<t t-esc="job.min_exp_year"/>
														to
														<t t-esc="job.max_exp_year"/>
														years
													</span>
												</div>
											</t>
											<t t-elif="job.min_exp_year and int(job.min_exp_year) &gt; 0 and job.max_exp_year and int(job.max_exp_year) == 0">
												<div class="mb-3">
													<span class="font-weight-bold">Minimum Experience:</span>
													<span>
														<t t-esc="job.min_exp_year"/>
														year(s)
													</span>
												</div>
											</t>

											<t t-elif="job.max_exp_year and int(job.max_exp_year) &gt; 0 and job.min_exp_year and int(job.min_exp_year) == 0">
												<div class="mb-3">
													<span class="font-weight-bold">Maximum Experience:</span>
													<span>
														<t t-esc="job.max_exp_year"/>
														year(s)
													</span>
												</div>
											</t>
											<t t-else=""/>

