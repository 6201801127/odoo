<?xml version="1.0"?>
<odoo>
  <data>   
    
      <record model="ir.ui.view" id="kw_recruitment_upcoming_new_joinee_ree">
        <field name="name">Recruitment upcoming New joinee details</field>
        <field name="model">hr.applicant</field>
        <field name="arch" type="xml">
          <tree create="false" edit="false" >
            
              <field name="partner_name" string='Name' />
              <field name="job_id" string='Designation'/>  
              <field name="department_id" string='Dept.'/>  
              <field name="project_name" string='Reqd. Project.'/> 
              <field name="project_pm"/>
              <field name="job_location_id" string='Location'/>
              <field name="employee_type" string='Employment'/>
              <field name="gender" string='Gender' />
              <field name="source_id" string='Source' />         
              <field name="hiring_type" string='Hiring Type' />   
              <field name="employee_id" string='Replacement of' />
              <field name="salary_replaced" /> 
              <field name="requisition_date" string='Date of Requisition' />
              <field name="date_of_offer" string='Date of Offer' />  
              <field name="availability" string='DOJ' />
              <field name="time_hire" /> 
              <field name="time_fill" />
              <field name="salary_proposed" string='Salary of New hire' />       
              <field name="stage_id" string='Status'/> 
          </tree>
        </field>
      </record>

        <record model="ir.actions.act_window" id="action_recruitment_new_upcoming_joinee_view_tree">
            <field name="name">Upcoming New Joinee Report</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">tree</field>
            <field name="domain"></field>
            <field name="view_id" ref="kw_recruitment_upcoming_new_joinee_ree"/>
        </record>

      <menuitem parent="hr_recruitment.report_hr_recruitment" id="upcoming_new_joinee_report_menu"
      name="Upcoming New joinee Report"
      action="action_recruitment_new_upcoming_joinee_view_tree"/>

    </data>
</odoo>