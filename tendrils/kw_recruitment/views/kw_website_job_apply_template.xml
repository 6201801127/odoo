<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="kw_recruitment" inherit_id="website_hr_recruitment.apply">
			<xpath expr="//div[@id='wrap']" position="replace">
				<div id="wrap" class="container job_apply">
					<div class="row  mt-5 mb-5">
						<div class="col-sm-6 col-sm-offset-6 col-md-7">
							<div class="card py-3 pl-3 pr-4">
								<div class="card-body">
									<h5 class="text-center mt-2 white-text">
										Job Application Form
									</h5>
									<h2 t-if="job" class="text-center white-text">
										<span t-field="job.job_id.name"/><br/>
									</h2>
									<!--
									<h6 t-if="job and job.address_id" class="text-center white-text">
										 <span t-field="job.address_id" t-options='{
																		"widget": "contact",
																		"fields": ["country_id","city"],
																		"no_tag_br": True}'
																		/> 
									</h6> -->
									<div class="row">
										<section id="forms" class="col pr-4">
											<form action="/website_form/" method="post" class="s_website_form" enctype="multipart/form-data"
											      data-model_name="hr.applicant" data-success_page="/job-thank-you"
											      t-att-data-form_field_department_id="job and job.department_id.id or False"
												  t-att-data-form_field_job_id="job and job.job_id and job.job_id.id or False"
												  t-att-data-form_field_job_position="job and job.id or False">
												<div class="md-form input-group mb-4 o_website_form_required_custom">
													<div class="input-group-prepend">
														<span class="input-group-text md-addon"></span>
													</div>
													<input type="text" class="form-control " name="partner_name"
													       required="" autocomplete="off"/>
													<label for="partner_name pl-0">Your Name</label>
												</div>
												<div class="md-form input-group mb-4 o_website_form_required_custom">
													<div class="input-group-prepend">
														<span class="input-group-text md-addon"></span>
													</div>
													<input type="email" class="form-control " name="email_from"
													       required="" autocomplete="off"
													       style="color: #fff; border-bottom: 1px solid #fff;"/>
													<label class="mylabel" for="email_from" style="color:white; ">Your Email</label>
												</div>

												<div class="md-form input-group mb-4 o_website_form_required_custom">
													<div class="input-group-prepend">
														<span class="input-group-text md-addon"></span>
													</div>
													<input type="text" class="form-control " name="partner_mobile"
													       required="" autocomplete="off"/>
													<label class="mylabel" for="partner_mobile">Your Mobile Number</label>
												</div>

												<div class="md-form input-group mb-4 o_website_form_required_custom">
													<div class="input-group-prepend">
														<span class="input-group-text md-addon"></span>
													</div>
													<textarea class="form-control  md-textarea" name="description"
													          style="color:#fff; border-bottom: 1px solid #fff;"></textarea>
													<label class="mylabel" for="description" style="color:white; ">Short Introduction
													</label>
												</div>
												<div class="md-form input-group mb-4 o_website_form_required_custom">
													<div class="input-group-prepend">
														<span class="input-group-text md-addon"></span>
													</div>
													<input type="text" class="form-control " name="qualification"
													       required=""/>
													<label class="mylabel" for="qualification">Your Qualification</label>
												</div>

												<div class="md-form mb-4 o_website_form_required_custom pl-4">
													<select class="form-control" id="experience" name="experience" style="border: 0; border-bottom: 1px solid #fff; color: #fff;">
														<option value="0">Your Experience</option>
														<t t-foreach="request.env['hr.applicant'].sudo()._get_exp_years()"
														   t-as="years">
															<option t-att-value="years[0]" t-attf-style="color:#000;">
																<t t-esc="years[0]"/>
															</option>
														</t>
													</select>
												</div>
											

												<div class="md-form mb-4 o_website_form_required_custom pl-4">
													<span style="color:white">Upload Resume</span>
														<div class="file-select">
															<input type="file"  name="resume" accept="image/jpg,image/png,image/jpeg" class="form-control "/>
														</div>
												</div> 
										
												<div class="md-form  o_website_form_required_custom text-center  " >
													<a href="#" role="button"
													   class="btn btn-success btn-md  o_website_form_send font-weight-bold">
														<span class="h6"> Submit </span>
													</a> 
													
												</div>
												<span id="o_website_form_result" class="text-warning"></span>
											</form>
										</section>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</xpath>
		</template>

		<template id="apply_form_assets" inherit_id="kw_recruitment.kw_recruitment">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/kw_recruitment/static/src/css/style.css" />
			</xpath>
		</template>
	</data>
</odoo>
