<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrf_employee_grade_access" model="ir.ui.view">
            <field name="name">mrf_employee_grade_access.tree</field>
            <field name="model">mrf_employee_grade_access</field>
            <field name="arch" type="xml">
                <tree string="MRF Employee Grade Configuration" editable='bottom'>
                    <field name="grade_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="action_mrf_employee_grade_access" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">MRF Employee Grade Configuration Master</field>
            <field name="res_model">mrf_employee_grade_access</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="MRF Employee Grade Configuration Master"
                  parent="kw_recruitment.menu_mrf_configuration_root"
                  id="mrf_employee_grade_access_menu"
                  action="action_mrf_employee_grade_access"/>

    </data>
</odoo>