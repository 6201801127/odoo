<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">
		<template id="kw_recruitment_button_redirect" name="MRF">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">
							<div class="container card">
								<div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content text-center">

												<h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
													Manpower Requisition Form
													<br/>
												</h2>
												<t t-foreach="datas" t-as="data">
													<h3>Ref: <strong><span t-field="data.code"/></strong></h3>
													<h3>
														<t t-if="salary_info">
															<span style="color: #f00; font-weight:bold">Salary info are not mentioned. Please contact TAG to update.</span>
														</t>
														<t t-else="">
															<t t-if="data.state == 'forward'">MRF request has been forwarded successfully!</t>
															<t t-if="data.state == 'approve'">MRF request has been approved successfully!</t>
															<t t-if="data.state == 'hold'">MRF request is on Hold!</t>
															<t t-if="data.state == 'reject'">MRF request has been rejected successfully!</t>
														</t>
													</h3>
													<br/>
													<a class="btn btn-secondary"
													   style="background-color: #f7941d !important;"
													   t-att-href="'/web#id='+str(data.id)+'&amp;action=kw_recruitment.kw_recruitment_requisition_pending_act_window&amp;model=kw_recruitment_requisition&amp;view_type=form'">
														View Details
														&amp;nbsp;
														<i class="fa fa-arrow-circle-right "/>
													</a>
												</t>
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
			</t>
		</template>
		<template id="kw_recr_applicant_button_redirect" name="Applicant">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">
							<div class="container card">
								<div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content text-center">

												<h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
													Recruitment Form
													<br/>
												</h2>
												<t t-foreach="datas" t-as="data">
													<h3>Ref: <strong><span t-field="data.offer_id"/></strong></h3>
													<h3>
											
														<t t-if="data.stage_id == 5">Application has been approved successfully!</t>
													</h3>
													<br/>
													<a class="btn btn-secondary"
													   style="background-color: #f7941d !important;"
													   t-att-href="'/web#id='+str(data.id)+'&amp;action=hr_recruitment.crm_case_categ0_act_job&amp;model=hr_applicant&amp;view_type=form'">
														View Details
														&amp;nbsp;
														<i class="fa fa-arrow-circle-right "/>
													</a>
												</t>
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
			</t>
		</template>

		<template id="kw_recruitment_button_redirect_assets" inherit_id="kw_recruitment.kw_recruitment_button_redirect">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css?v=12" rel="stylesheet"/>
				<script type="text/javascript" src="/kwantify_theme/static/src/mdb/js/mdb.min.js?v=12"/>
			</xpath>
		</template>

	</data>
</odoo>