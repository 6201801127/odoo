		<template id="kw_recruitment_offer_acceptance_button_redirect" name="Offer Letter">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">

                            <div class="container card">
                                <div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content">
                                                    <div class="modal-header d-flex justify-content-between text-center align-items-center">
                                                        <div class="">
                                                            <img src="/kw_recruitment/static/src/img/offerletterlogo.png" alt="" style="height:80px;"/>

                                                        </div>
                                                    </div>
                                                    <br/>
                                                    <div class="">
                                                        <h3 class="ml-4">
                                                            <strong>
                                                                Hello
                                                                <span style="color:red" id='partner_name'
                                                                      t-field="datas.partner_name"/>,
                                                            </strong>
                                                            <input type="hidden" readonly="readonly" t-att-value="token"
                                                                   id="offerApplicantToken"/>
                                                        </h3>
                                                        <br/>
                                                        <h5 class="ml-4">
                                                            Congratulations on receiving an Offer Letter from CSM Technologies.
                                                            <br/>
                                                            To continue with the process of joining our team, kindly click on
                                                            the option(s) provided below and take the necessary steps.
                                                        </h5>
                                                    </div>
                                                    <br/>
                                                    <div class="modal-footer d-flex justify-content-between">
                                                        <a class="btn btn-secondary btn-sm waves-effect waves-light"
                                                           t-att-href="'/download-offer-letter/'+token+'?download=1'"
                                                           style="background-color: #f7941d !important;cursor:pointer;">
                                                            <i class="fa fa-download"></i>
                                                            Download Offer Letter
                                                        </a>
                                                         <a class="btn btn-secondary btn-sm" id="accept_offer_letter"
                                                            style="background-color: #40a040 !important;cursor:pointer;">
                                                            <i class="fa fa-check"/>
                                                            Accept Offer Letter
                                                        </a>
                                                        <a class="btn btn-secondary btn-sm" id="decline_offer"
                                                            style="background-color: red !important;cursor:pointer;">
                                                            <i class="fa fa-close"/>
                                                            Decline Offer Letter
                                                        </a>
                                                    </div>
                                                <div class="pull-right" id="offer_letter_decline_reasons" style="display:none;position:absolute;bottom:0px;right:0px;">
                                                    <div class="card">
                                                        <div class="card-header">Please mention a reason for declining the Offer:</div>
                                                        <div class="card-body">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                       name="offer_letter_decline" id="exampleRadios1"
                                                                       value="Retained by current company with better compensation"/>
                                                                <label class="form-check-label" for="exampleRadios1">
                                                                    Retained by current company with better compensation
                                                                </label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                       name="offer_letter_decline" id="exampleRadios2"
                                                                       value="Got better offer from other company"/>
                                                                <label class="form-check-label" for="exampleRadios2">
                                                                    Got better offer from other company
                                                                </label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                       name="offer_letter_decline" id="exampleRadios3"
                                                                       value="Location constraint"/>
                                                                <label class="form-check-label" for="exampleRadios3">
                                                                    Location constraint
                                                                </label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                       name="offer_letter_decline" id="exampleRadios4"
                                                                       value="Looking for remote job only"/>
                                                                <label class="form-check-label" for="exampleRadios4">
                                                                    Looking for remote job only
                                                                </label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                       name="offer_letter_decline" id="exampleRadios5"
                                                                       value="Any other Reasons, Please specify"/>
                                                                <label class="form-check-label" for="exampleRadios5">
                                                                    Any other Reasons, Please specify
                                                                </label>
                                                            </div>
                                                            <div class="form-group">
                                                                <textarea class="form-control" style="display:none;" type="text"
                                                                          id="offer_letter_decline_reason"
                                                                          rows="3"></textarea>
                                                            </div>
                                                            <button type="button" id="offer_letter_decline_submit" class="btn btn-success btn-sm mb-2"><i class="fa fa-check"/> Submit</button>
                                                            <button type="button" id="offer_letter_decline_cancel" class="btn btn-danger btn-sm mb-2"><i class="fa fa-close"/> Cancel</button>
                                                        </div>
                                                    </div>
                                                </div>

											</div>
										</div>
									</div>
								</div>
                            </div>
						</section>
					</div>
				</div>
			</t>
		</template>

