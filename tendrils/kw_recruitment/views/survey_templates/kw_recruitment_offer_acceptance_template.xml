        <template id="kw_recruitment_offer_download_button_redirect" name="Offer Letter Download">
			<t t-call="website.layout">
				<div class="wrap">
					<div class="container">
						<section class="service-request mt32">

                            <div class="container card">
                                <div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content">
                                                    <div class="modal-header d-flex justify-content-between text-center align-items-center">
                                                        <div class="">
                                                            <img src="/kw_recruitment/static/src/img/offerletterlogo.png" />
                                                            <span class="h1 ml-5">
                                                                Download Offer Letter
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <br/>
                                                    <div class="">
                                                        <h2 class="ml-4"><strong>
                                                            Hello
                                                            <span style="color:red" id='partner_name' t-field="applicant.partner_name"/></strong>,
                                                            <input type="hidden" readonly="readonly" t-att-value="token" id="offerApplicantToken" />
                                                        </h2>
                                                        <br/>
                                                        <h4 class="ml-4">
                                                            OTP has been sent to your email address :
                                                            <strong>
                                                                <span style="color:red"  id='applicant_email' t-field="applicant.email_from"/>
                                                            </strong>
                                                        </h4>
                                                    </div>
                                                    <div class="row">
                                                        <h4 class="ml-4 pl-3 mt-4 font-weight-bold" style="color: #7c7bad !important;">
                                                            Enter OTP :
                                                        </h4>
                                                        <div class="md-form mx-4" style="floa">
                                                            <input type="text" class="form-control txtvalid otptext" id="otpverification_download" name="otpverification_download" maxlength='4' />
                                                            <label for="otpverification_download" class="font-weight-bold grey-text reg hidden"> Enter OTP </label>
                                                            <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                            <div class="text-left mx-1" id="resultdata"/>
                                                        </div>
                                                        <div class="mt-4 text-left mx-3">
                                                            <label for="Time Left" class="col-form-label"> <h4 class="ml-5 font-weight-bold" style="color: #7c7bad !important;">Time Left:</h4> </label> &amp;emsp;
                                                            <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                        </div>
                                                    </div>

                                                    <div class="modal-footer d-flex justify-content-between">
                                                        <a class="btn btn-secondary" id="resendotp_download_offer_letter"
                                                            style="background-color: #42c642 !important;cursor:pointer;">
                                                            <i class="fa fa-arrow-circle-right"/>
                                                            Resend OTP
                                                        </a>
                                                        <br/>
                                                        <div class="text-left mx-5 ml-4">
                                                            <span class='text-center text-danger' id="desc"/>
                                                        </div>
                                                         <a class="btn btn-secondary" id="accept_download_offer_letter"
                                                            style="background-color: #f7941d !important;cursor:pointer;">
                                                            <i class="fa fa-download"/>
                                                            Download
                                                        </a>
                                                    </div>
												
											</div>
										</div>
									</div>
								</div>
                            </div>
						</section>
					</div>
				</div>
			</t>
		</template>
