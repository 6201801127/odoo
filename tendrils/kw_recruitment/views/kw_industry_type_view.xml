<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_kw_industry_type_category" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Functional Area</field>
            <field name="res_model">kw_industry_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>

        <record id="view_kw_industry_type_category" model="ir.ui.view">
            <field name="name">kw_industry_type.tree</field>
            <field name="model">kw_industry_type</field>
            <field name="arch" type="xml">
                <tree string="Functional Area">
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_industry_type_form" model="ir.ui.view">
            <field name="name">kw_industry_type.form</field>
            <field name="model">kw_industry_type</field>
            <field name="arch" type="xml">
                <form string="Functional Area" duplicate="false">
                    <sheet>
                        <group>
                           
                                <field name="name"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Functional Area" parent="hr_recruitment.menu_hr_recruitment_configuration" id="menu_kw_industry_type" action="action_kw_industry_type_category"/>

    </data>
</odoo>