<odoo>
    <data>
        <record id="recruitment_hiring_dashboard_action" model="ir.actions.client">
            <field name="name">Recruitment Hiring Analytics Dashboard</field>
            <field name="tag">kw_recruitment_hiring_dashboard_tag</field>
        </record>
        
        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="hiring_dashboard_menu"
                  name="Ageing (To Join) Dashboard"
                  action="recruitment_hiring_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="1"/>

        <record id="recruitment_hiring_offer_dashboard_action" model="ir.actions.client">
            <field name="name">Recruitment Hiring Offer Dashboard</field>
            <field name="tag">kw_recruitment_hiring_offer_dashboard_tag</field>
        </record>
        
        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="hiring_offer_dashboard_menu"
                  name="Ageing (To Offer) Dashboard"
                  action="recruitment_hiring_offer_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="2"/>

        <record id="recruitment_source_hire_dashboard_action" model="ir.actions.client">
            <field name="name">Recruitment Source Of Hiring Rate Dashboard</field>
            <field name="tag">kw_recruitment_source_of_hire_dashboard_tag</field>
        </record>

        <record id="recruitment_offer_to_join_dashboard_action" model="ir.actions.client">
            <field name="name">Recruitment Offer To Join Dashboard</field>
            <field name="tag">kw_recruitment_offer_to_join_dashboard_tag</field>
        </record>

        <record id="recruitment_offer_to_dropout_dashboard_action" model="ir.actions.client">
            <field name="name">Recruitment Offer To Dropout Dashboard</field>
            <field name="tag">kw_recruitment_offer_to_dropout_dashboard_tag</field>
        </record>

        <record id="recruitment_infant_attration_dashboard_action" model="ir.actions.client">
            <field name="name">Recruitment Infant Attration Dashboard</field>
            <field name="tag">kw_recruitment_infant_attration_dashboard_tag</field>
        </record>

        <record id="recruitment_mrf_dashboard_action" model="ir.actions.client">
            <field name="name">MRF Dashboard</field>
            <field name="tag">kw_recruitment_mrf_dashboard_tag</field>
        </record>

        <record id="recruitment_vacancy_dashboard_action" model="ir.actions.client">
            <field name="name">Vacancy Dashboard</field>
            <field name="tag">kw_recruitment_vacancy_dashboard_tag</field>
        </record>
        
        
        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="source_hire_dashboard_menu"
                  name="Source of Hire Rate Dashboard"
                  action="recruitment_source_hire_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="3"/>

        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="offer_to_join_dashboard_menu"
                  name="Offer To Join Dashboard"
                  action="recruitment_offer_to_join_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="4"/>

        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="offer_to_dropout_dashboard_menu"
                  name="Offer To Dropout Dashboard"
                  action="recruitment_offer_to_dropout_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="5"/>

        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="infant_attration_dashboard_menu"
                  name="Infant Attrition Dashboard"
                  action="recruitment_infant_attration_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="6"/>

        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="mrf_dashboard_menu"
                  name="MRF Dashboard"
                  action="recruitment_mrf_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="7"/>

        <menuitem parent="kw_recruitment.menu_dashboard"
                  id="vacancy_dashboard_menu"
                  name="Vacancy Dashboard"
                  action="recruitment_vacancy_dashboard_action"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="7"/>

    </data>
    <template id="hiring_assets_backend" name="Hiring Dashboard assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/kw_recruitment/static/src/js/hiring_dashboard.js"/>
            <script type="text/javascript" src="/kw_recruitment/static/src/js/aging_to_offer.js"/>
            <script type="text/javascript" src="/kw_recruitment/static/src/js/offer_dropout.js"/>
            <script type="text/javascript" src="/kw_recruitment/static/src/js/infant_attration.js"/>
            <script type="text/javascript" src="/kw_recruitment/static/src/js/source_of_hire.js"/>
            <script type="text/javascript" src="/kw_recruitment/static/src/js/offer_to_join.js"/>

            <script type="text/javascript" src="/kw_recruitment/static/src/js/mrf_tagged_approved.js"/>

            <script type="text/javascript" src="/kw_recruitment/static/src/js/vacancy_dashboard.js"/>

            <link rel="stylesheet" href="/kw_resource_management/static/src/css/rcm_dashboard.css"/>
            <link rel="stylesheet" href="/kw_recruitment/static/src/css/offer.css"/>

        </xpath>
    </template>
</odoo>
