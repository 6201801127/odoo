<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kw_recruitment_walk_in_meeting_tree" model="ir.ui.view">
            <field name="name">view.kw_recruitment_walk_in_meeting.tree</field>
            <field name="model">kw_recruitment_walk_in_meeting</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="time"/>
                    <field name="duration"/>
                    <field name="location_id"/>
                    <field name="meeting_room_id"/>
                    <field name="survey_id"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_recruitment_walk_in_meeting_form" model="ir.ui.view">
            <field name="name">view.kw_recruitment_walk_in_meeting.form</field>
            <field name="model">kw_recruitment_walk_in_meeting</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="99"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="time"/>
                                <field name="duration"/>
                                <field name="location_id"/>
                                <field name="meeting_room_id"/>
                                <!-- context="{'tree_view_ref':'kw_meeting_schedule.view_hr_employee_recruitment_tree'}" -->
                                <field name="member_ids" options="{'no_create': True,'no_open': False}">
                                    <tree editable="bottom" create="true" delete="true" edit="true">
                                        <field name="image_small" string="Photo" class="oe_avatar" widget="image"
                                               height="25px" width="25px"/>
                                        <field name="name"/>
                                        <field name="job_id" string="Designation" options="{'no_open': False}"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="survey_id"/>
                                <field name="meeting_detail_ids">
                                    <tree editable="bottom">
                                        <field name="applicant_id" options="{'no_create': True,'no_open': True}"/>
                                        <field name="meeting_url"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <group>
                            <field name="response_ids" readonly="1">
                                <tree create="false" edit="false" open="false" delete="false">
                                    <field name="applicant_id" invisible="0" string="Applicant"/>
                                    <field name="survey_id" invisible="1"/>
                                    <field name="partner_id" string="Interviewer" style="pointer-events:none;"/>
                                    <field name="create_date" string="Date" style="pointer-events:none;"/>
                                    <field name="score" string="Score" style="pointer-events:none;"/>
                                    <field name="remark" string="Remark" style="pointer-events:none;"/>
                                    <field name="current_user" invisible="1"/>
                                    <field name="state" invisible="1"/>

                                    <button name="view_feedback" type="object"
                                            string="View Feedback" class="oe_highlight"
                                            attrs="{'invisible':[('state','=','new')]}"/>

                                    <button name="give_feedback" type="object"
                                            string="Submit Feedback" class="oe_highlight"
                                            attrs="{'invisible':[('state','!=','new')]}"/>
                                    <button name="print_feedback" type="object"
                                            string="PDF" attrs="{'invisible':[('state','=','new')]}"
                                            class="oe_highlight"/>

                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
