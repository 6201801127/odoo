<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        <record id="view_screening_reminder_log" model="ir.ui.view">
			<field name="name">screening_reminder_log.tree</field>
			<field name="model">screening_reminder_log</field>
			<field name="arch" type="xml">
                <tree string="Screening Scheduler Log Tree">
					<field name="schedule_date"/>
					<field name="payload"/>
					<field name="status"/>
				</tree>
			</field>
		</record>

		<record id="view_screening_reminder_log_form" model="ir.ui.view">
			<field name="name">screening_reminder_log.form</field>
			<field name="model">screening_reminder_log</field>
			<field name="arch" type="xml">
				<form string="Screening Scheduler Log Form">
					<sheet>
						<group>
							<field name="schedule_date"/>
                            <field name="payload"/>
                            <field name="status"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
        <record id="action_screening_reminder_log" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Screening Scheduler Log</field>
            <field name="res_model">screening_reminder_log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
        </record>

		<menuitem name="Screening Scheduler Log" parent="hr_recruitment.menu_hr_recruitment_configuration" id="menu_screening_reminder_log"
		          action="action_screening_reminder_log" sequence="991" />

	</data>
</odoo>
