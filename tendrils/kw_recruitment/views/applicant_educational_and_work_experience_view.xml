

<odoo>
    <data>
        <record id="kw_applicant_edu_qualification_view_form" model="ir.ui.view">
            <field name="name">Educational Details Form</field>
            <field name="model">hr_applicant_edu_qualification</field>
            <field name="arch" type="xml">
                <form string="Educational Details">
                    <sheet>
                        <group >
                            <group >
                                <field name="course_type"/>
                                <field name="course_id"/>
                                <field name="stream_id"/>
                                <field name="university_name"/>
                                <field name="passing_details"/>
                            </group>
                            <group >
                                <field name="passing_year"/>
                                <field name="division"/>
                                <field name="marks_obtained" />
                                <!-- <field name="uploaded_doc"/> -->
                                <!-- <field name="filename" invisible="1"/>
                                <field name="uploaded_doc" widget="binary" filename="filename" />
                                <div class="file-format-note">(Only .jpeg,.png, .pdf format are allowed.Maximum file size is 4 MB) &#x2063;<span style="color:red;">*</span></div> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
       
        <record id="kw_applicant_edu_qualification_view_tree" model="ir.ui.view">
            <field name="name">Educational Details Tree</field>
            <field name="model">hr_applicant_edu_qualification</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="course_type"/>
                    <field name="course_id"/>
                    <field name="stream_id"/>
                    <field name="university_name"/>
                    <field name="passing_year"/>
<!--                    <field name="uploaded_doc" invisible="1"/>-->
                </tree>
            </field>
        </record>

        <record id="kw_hr_applicant_work_experience_view_form" model="ir.ui.view">
            <field name="name">Work Experience Form</field>
            <field name="model">hr_applicant_work_experience</field>
            <field name="arch" type="xml">
                <form string="Work Experience">
                    <sheet>
                        <group>
                            <group>
                                <field name="country_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="designation_name"/>
                                <field name="organization_type"/>
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="industry_type"/>
                                <field name="effective_from" options="{'datepicker':{'maxDate': 'now'}}"/>
                                <field name="effective_to" options="{'datepicker':{'maxDate': 'now'}}"/>
                                <!-- <field name="uploaded_doc" widget="binary" filename="filename"/>
                                <div class="file-format-note">(Only .jpeg,.png, .pdf format are allowed.Maximum file size is 4 MB) &#x2063;<span style="color:red;">*</span></div>
                                <field name="filename" invisible="1"/> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="kw_hr_applicant_work_experience_view_tree" model="ir.ui.view">
            <field name="name">Work Experience Tree</field>
            <field name="model">hr_applicant_work_experience</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="country_id"/>
                    <field name="name"/>
                    <field name="designation_name"/>
                    <field name="organization_type"/>
                    <field name="industry_type"/>
                    <field name="effective_from"/>
                    <field name="effective_to"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>        