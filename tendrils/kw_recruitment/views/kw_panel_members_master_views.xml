<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_kw_panel_members_master_category" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Panel Members</field>
            <field name="res_model">kw_panel_members_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>

        <record id="view_kw_panel_members_master" model="ir.ui.view">
            <field name="name">kw_panel_members_master.tree</field>
            <field name="model">kw_panel_members_master</field>
            <field name="arch" type="xml">
                <tree string="panelmembers">
                    <field name="grp_name"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="members_name"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_panel_members_master_form" model="ir.ui.view">
            <field name="name">kw_panel_members_master.form</field>
            <field name="model">kw_panel_members_master</field>
            <field name="arch" type="xml">
                <form string="panelmembers" duplicate="false">
                    <sheet>
                        <group>
                            <field name="grp_name"/>
                            <field name="members_name" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Panel Members"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  id="menu_panel_members_category"
                  action="action_kw_panel_members_master_category"/>

    </data>
</odoo>