                                                    </td>
                                                    <td class="md-form">
                                                        <select  title="Please select board / institute / university ⁣"  class="form-control likert-field" t-att-id="'cert_board_'+str(cnt)" t-att-name="'cert_board_'+str(cnt)" placeholder="Board">
                                                            <option value="">Select</option>
                                                            <t t-foreach="request.env['kwmaster_institute_name'].sudo().search([('inst_course_ids','in',training_course_id)])" t-as="institute">
                                                                <option t-att-value="institute.id" t-att-selected="institute.id==data.get('ddltrainingBoard')"><t t-esc="institute.name"/></option>
                                                            </t>
                                                        </select>
                                                    </td>
                                                    <td class="md-form">
                                                        <select title="Please select passing year⁣" class="form-control likert-field" t-att-id="'cert_year_'+str(cnt)" t-att-name="'cert_year_'+str(cnt)" placeholder="Passing Year">
                                                            <option value="">Select</option>
                                                            <t t-foreach="year_options" t-as="years">
                                                                <option t-att-value="years[0]" t-att-selected="years[0]==data.get('ddltrainingYear')"><t t-esc="years[0]"/></option>
                                                            </t>
                                                        </select>
                                                    </td>
                                                    <td class="md-form">
                                                        <input title="Please enter division / grade" type="text" class="form-control likert-field gradeval" maxlength="6" t-att-id="'cert_grade_'+str(cnt)" t-att-name="'cert_grade_'+str(cnt)" t-att-value="data.get('txttrainingGrade')" placeholder="Grade"/>
                                                    </td>
                                                    <td class="md-form">
                                                        <input title="Please enter % of marks obtained⁣" type="text" maxlength="5" class="form-control likert-field percentval" t-att-id="'cert_percent_'+str(cnt)" t-att-name="'cert_percent_'+str(cnt)" t-att-value="data.get('txttrainingPercent')" placeholder="Percent"/>
