                                                <t t-set="cnt" t-value="cnt+1"/>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <tr class="likert">
                                                <th scope="row">Certification</th>
                                                <td class="md-form">
                                                    <select title="Please select stream" class="form-control likert-field" id="cert_stream_0" name="cert_stream_0" placeholder="Stream">
                                                        <option value="">Select</option>
                                                        <t t-foreach="request.env['kwmaster_stream_name'].sudo().search([('course_id','=',training_course_id)])" t-as="stream">
                                                            <option t-att-value="stream.id"><t t-esc="stream.name"/></option>
                                                        </t>
                                                    </select>
                                                </td>
                                                <td class="md-form">
                                                    <select title="Please select board / institute / university ⁣"  class="form-control likert-field" id="cert_board_0" name="cert_board_0" placeholder="Board">
                                                        <option value="">Select</option>
                                                        <t t-foreach="request.env['kwmaster_institute_name'].sudo().search([('inst_course_ids','in',training_course_id)])" t-as="institute">
                                                            <option t-att-value="institute.id"><t t-esc="institute.name"/></option>
                                                        </t>
                                                    </select>
                                                </td>
                                                <td class="md-form">
                                                    <select title="Please select passing year⁣" class="form-control likert-field" id="cert_year_0" name="cert_year_0" placeholder="Passing Year">
                                                        <option value="">Select</option>
                                                        <t t-foreach="year_options" t-as="years">
                                                            <option t-att-value="years[0]"><t t-esc="years[0]"/></option>
                                                        </t>
                                                    </select>
                                                </td>
                                                <td class="md-form">
                                                    <input title="Please enter division / grade" type="text" class="form-control likert-field gradeval" maxlength="6" id="cert_grade_0" name="cert_grade_0" placeholder="Grade"/>
                                                </td>
                                                <td class="md-form">
                                                    <input title="Please enter % of marks obtained⁣" type="text" maxlength="5" class="form-control likert-field percentval" id="cert_percent_0" name="cert_percent_0" placeholder="%" value=""/>
                                                </td>
                                                <td class="md-form">
                                                    <center>
                                                        <button type="button" class="btn btn-danger close_row btn_hide_cert anchor btn-sm pr-3 pl-3"><i class="fa fa-trash"/></button>
                                                    </center>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="8">
                                                <button type="button" class="btn btn-success add-row btn_add_cert anchor pull-right btn-sm"> Add More </button>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                                </div>
                                <!--certificate block end-->
                                <div>
                                    <button type="submit" class="btn btn-success btn-md" name="draft" value="draft"
                                            id="btnSubmitED">Save Educational Details
                                    </button>
                                    <button type="submit" class="btn btn-success btn-md" name="next" value="next"
                                            id="btnSubmitEDNext">Save And Next
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="assets_frontend_eductional" name="applicant_edu_assets" inherit_id="kw_recruitment.kw_recruitment_educational_details">
            <xpath expr="." position="inside">
                <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet' />
                <link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet"/>
<!--                <link rel="stylesheet" href="/kw_onboarding/static/src/css/bootstrap-datepicker.min.css"/>-->
                <link rel="stylesheet" href="/kw_recruitment/static/src/css/applicant.css"/>

