<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_mrf_report_access_view_tree" model="ir.ui.view">
            <field name="name">kw_mrf_report_access.view.tree</field>
            <field name="model">kw_mrf_report_access</field>
            <field name="arch" type="xml">
                <tree duplicate='0' delete='0' editable='bottom'>
                    <field name="employee_ids" widget="many2many_tags"
                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <record id="kw_mrf_report_access_view_form" model="ir.ui.view">
            <field name="name">kw_mrf_report_access.view.form</field>
            <field name="model">kw_mrf_report_access</field>
            <field name="arch" type="xml">
                <form duplicate='0' delete='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_mrf_report_access_action" model="ir.actions.act_window">
            <field name="name">MRF Report Configuration</field>
            <field name="res_model">kw_mrf_report_access</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_recruitment.kw_mrf_report_access_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_recruitment.kw_mrf_report_access_view_form')})]"/>
        </record>

        <menuitem name="MRF Report Access Configuration"
                  parent="kw_recruitment.menu_mrf_configuration_root"
                  id="mrf_report_access_menu"
                  action="kw_mrf_report_access_action"/>
    </data>
</odoo>