<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kw_notify_to_panel" model="ir.ui.view">
            <field name="name">kw_notify_to_panel.tree</field>
            <field name="model">kw_notify_to_panel</field>
            <field name="arch" type="xml">
                <tree string="Notify To panel">
                    <field name="create_date"/>
                    <field name="applicant_id"/>
                    <field name="job_id"/>
                    <field name="job_position_id"/>
                    <field name="email_from"/>
                    <field name="stage_id"/>
                    <field name="panel_member_id"/>
                    <field name="stage_code" invisible='1'/>
                    <button string="Notify to Panel" name="%(kw_recruitment.notify_view_action_window)d" class="btn-success" 
                            type="action" context="{'active_applicant_id': id,'hide_panel':True}"
                            attrs="{'invisible': [('stage_code','!=','IQ')]}"
                            groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <button string="Update Panel Member" name="update_panel_member" class="btn-success" 
                            type="object"
                            attrs="{'invisible': [('stage_code','!=','IQ')]}"
                            groups="hr_recruitment.group_hr_recruitment_manager"/>
                </tree>
            </field>
        </record>

        <act_window id="notify_view_action_window" name="Notify To Panel" src_model="kw_notify_to_panel" 
        res_model="notify_wizard" view_mode="form" view_type="form" view_id="notify_view_wizard_form" 
        context="{'value': active_ids}" key2="client_action_multi" target="new" />

        <record id="action_kw_notify_to_panel" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Notify To Panel</field>
            <field name="res_model">kw_notify_to_panel</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>
        <menuitem name="Notify To Panel" parent="hr_recruitment.menu_crm_case_categ0_act_job"
                  id="menu_kw_notify_to_panel_menu"
                  action="action_kw_notify_to_panel"
                  groups="hr_recruitment.group_hr_recruitment_manager,kw_recruitment.group_hr_recruitment_consultant,kw_recruitment.group_hr_recruitment_executive"
                  sequence="190"/>

    </data>
</odoo>