
<odoo>
    <record id="view_applicant_hr_discussion_details_form" model="ir.ui.view">
        <field name="name">hr discussion details form</field>
        <field name="model">hr_discussion_applicant_details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h3>
                        <span>CSMPL HR Discussion Form: <field name="applicant_id" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/></span>
                    </h3>
                    <group>
                        <group>
                            <!-- <field name="designation" options="{'no_open': True,'no_create':True,'no_edit':True}"/> -->
                            <field name="designation_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>

                            <field name="department" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <!-- <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}"/> -->
                            <field name="date_of_joining" autocomplete="off"/>
                            <field name="job_location" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="employment_type" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="show_contract_fields" invisible="1"/>
                            <field name="show_traineeship_fields" invisible="1"/>
                            <field name="contract_duration" attrs="{'invisible': [('show_contract_fields', '=', False)]}"/>
                            <field name="traineeship_duration" attrs="{'invisible': [('show_traineeship_fields', '=', False)]}" autocomplete="off"/>
                            <field name="service_agreement_required"  widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('show_traineeship_fields', '=', False)]}"/>
                            <field name="service_agreement" attrs="{'invisible': [('service_agreement_required', '!=', 'Yes')]}" autocomplete="off"/>
                             <!-- attrs="{'invisible': [('show_contract_fields', '=', False)]}" -->
                            <field name="probation" autocomplete="off" 
                                attrs="{'invisible': ['|','|',('show_contract_fields', '=', True),('show_traineeship_fields', '=', True),('employment_type','=',False)]}" />
                        </group>
                        <group>
                            <field name="appraisal_eligibility" autocomplete="off" 
                                attrs="{'invisible': [('show_contract_fields', '=', True)]}" />
                            <field name="increment_eligibility"
                                attrs="{'invisible': [('show_contract_fields', '=', True)]}" autocomplete="off"/>
                            <field name="open_for_travel" widget="radio" options="{'horizontal': true}"/>
                            <field name="relocation" widget="radio" options="{'horizontal': true}"/>
                            <field name="non_joining_clients_competitors" autocomplete="off"/>
                            <label for="annual_compensation" string="Annual Compensation" />
                            <div class="address_format">
                                <field name="annual_compensation" autocomplete="off"
                                         class="mr-2" style="width: 40%;"/>
                                <field name="currency_id"
                                          class="mr-2" style="width: 40%;" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </div>
                        </group>
                    </group>
                    <group string="Benefits">
                        <field name="provident_fund" autocomplete="off"/>
                        <field name="gratuity" autocomplete="off" attrs="{'invisible': ['|',('employment_type','=',False), ('show_contract_fields', '=', True)]}"/>
                        <field name="health_insurance" autocomplete="off"/>
                        <!-- <field name="hr_discuss_mail" widget="radio" options="{'horizontal': true}"/> -->
                    </group>
                    <footer class="text-center"> 
                        
                        <!-- <button name="preview_hr_discussion_content" type="object" string="Preview" class="btn-secondary"/> -->

                        <button name="hr_discussion_download" context="{'button':'POSH Certificate'}" string=" Preview " type="object" class="btn-primary"/>
                        <button name="send_hr_discussion_mail" string="Send" type="object" class="btn btn-success" />
                        <button string="Close" class="btn btn-warning"  special="cancel"/>

                    </footer>
                </sheet>
            </form>
            
        </field>
    </record>

    <record id="action_applicant_hr_discussion_details" model="ir.actions.act_window">
        <field name="name">Discussion Details</field>
        <field name="res_model">hr_discussion_applicant_details</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_applicant_hr_discussion_details_form"/>
        <field name="target">new</field>
    </record>
</odoo>
