<?xml version="1.0"?>
<odoo>
	<record id="kw_calendar_event_tree" model="ir.ui.view">
		<field name="name">calendar.event.tree</field>
		<field name="model">calendar.event</field>
		<field name="arch" type="xml">
			<tree string="Meetings" decoration-bf="message_needaction==True">
				<field name="name" string="Subject"/>
				<field name="allday" invisible="True"/>
				<field name="start" string="Start Date"/>
				<field name="stop" string="End Date"/>
				<field name="partner_ids" widget="many2many_tags"/>
				<field name="location"/>
				<field name="state" invisible="True"/>
				<field name="duration" widget="float_time"/>
				<field name="message_needaction" invisible="1"/>
			</tree>
		</field>
	</record>
	<record id="kw_view_calendar_event_form" model="ir.ui.view">
		<field name="name">calendar.event.form</field>
		<field name="model">calendar.event</field>
		<field name="arch" type="xml">
			<form string="Meetings">
				<field name="current_uid" invisible="1"/>
				<sheet>
					<button string="Document" class="oe_stat_button float-right" icon="fa-bars" type="object"
					        name="view_redirect"
					        attrs="{'invisible': ['|', ('res_model', '=', False), ('res_id', '=', False)]}"/>
					<button name="done_meeting" string="Meeting Done" attrs="{'invisible':[('current_uid','=',False)]}"
					        class="oe_stat_button float-right" icon="fa-check" type="object"/>
					<field name="res_model" invisible="1"/>
					<field name="res_id" invisible="1"/>
					<field name="state" invisible="1"/>
					<field name="recurrency" invisible="1"/>
					<field name="is_attendee" invisible="1"/>
					<field name="attendee_status" invisible="1"/>
					<div class="oe_title">
						<div class="oe_edit_only">
							<label for="name"/>
						</div>
						<h1>
							<field name="name" placeholder="e.g. Business Lunch"/>
						</h1>
						<label for="partner_ids" string="Attendees" class="oe_edit_only"/>
						<h2>
							<field name="partner_ids" widget="many2manyattendee" placeholder="Select attendees..."
							       context="{'force_email':True}" class="oe_inline"/>
						</h2>
					</div>

					<notebook>
						<page name="page_details" string="Meeting Details">
							<group attrs="{'invisible': [('recurrency','==',False)]}" class="oe_edit_only ">
								<p class='alert alert-warning' role="status">This event is linked to a recurrence...
									<br/>
									<button type="object" name="action_detach_recurring_event"
									        string="Update only this instance"
									        help="Click here to update only this instance and not all recurrences. "
									        class="oe_link"/>
								</p>
							</group>
							<group>
								<group>
									<field name="start" attrs="{'invisible': True}"/>
									<field name="stop" attrs="{'invisible': True}"/>
									<field name="id" attrs="{'invisible': True}"/>

									<field name="start_date" string="Starting at"
									       attrs="{'required': [('allday','=',True)], 'invisible': [('allday','=',False)], 'readonly': [('id', '!=', False), ('recurrency','=',True)]}"/>
									<field name="stop_date" string="Ending at"
									       attrs="{'required': [('allday','=',True)],'invisible': [('allday','=',False)], 'readonly': [('id', '!=', False), ('recurrency','=',True)]}"/>
									<field name="survey_id" string="Interview Form" required="True"/>
									<field name="mode_of_interview" />
									<field name="get_date" attrs="{'invisible': True}"/>
									<field name="get_time" attrs="{'invisible': True}"/>
									<field name="start_datetime" string="Starting at"
									       attrs="{'required': [('allday','=',False)], 'invisible': [('allday','=',True)], 'readonly': [('id', '!=', False), ('recurrency','=',True)]}"/>
									<field name="stop_datetime" invisible="1"/>
									<label for="duration" attrs="{'invisible': [('allday','=',True)]}"/>
									<div attrs="{'invisible': [('allday','=',True)]}">
										<field name="duration" widget="float_time" string="Duration" class="oe_inline"
										       attrs="{'readonly': [('id', '!=', False), ('recurrency','=',True)]}"/>
										<span>hours</span>
									</div>
									<field name="allday"
									       attrs="{'readonly': [('id', '!=', False), ('recurrency','=',True)]}"/>
								</group>
								<group>
									<field name="categ_ids" widget="many2many_tags" options="{'no_edit': True,'no_create':True}"/>
									<field name="alarm_ids" widget="many2many_tags"/>
									<field name="location"/>
								</group>

							</group>
							<label for="description"/>
							<field name="description"/>
						</page>
						<page name="meeting_feedbacks" string="Meeting Feedbacks">
							<field name="response_ids">
								<tree create="false" edit="false" open="false" delete="false">
									<field name="id" invisible="0"/>
									<field name="survey_id" invisible="1"/>
									<field name="partner_id" string="Name" style="pointer-events:none;"/>
									<field name="create_date" string="Date" style="pointer-events:none;"/>
									<field name="score" string="Score" style="pointer-events:none;"/>
									<field name="remark" string="Remark" style="pointer-events:none;"/>
									<field name="current_user" invisible="1"/>
									<field name="state" invisible="1"/>
									<button name="view_feedback" type="object" string="View Feedback"
									 attrs="{'invisible':['|',('current_user','=',False),('state','=','new')]}"       
									        class="oe_highlight"/>
									<button name="give_feedback" type="object" string="Give Feedback"
									  attrs="{'invisible':['|',('current_user','=',False),('state','!=','new')]}"      
									        class="oe_highlight"/>
									<button name="print_feedback" type="object" string="PDF"
									        attrs="{'invisible':['|',('current_user','=',False),('state','=','new')]}"
									        class="oe_highlight"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
			</form>
		</field>
	</record>
	<record id="action_calendar_form" model="ir.actions.act_window">
		<field name="name">Meetings</field>
		<field name="res_model">calendar.event</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'search_default_mymeetings': 1}</field>
		<field name="domain">[('applicant_id','!=',False),('partner_ids.user_ids', 'in', [uid])]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Schedule a new meeting
			</p>
		</field>
	</record>
	<record model="ir.actions.act_window.view" id="kw_meeting_act_window_view_tree">
		<field name="sequence" eval="1"/>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="kw_calendar_event_tree"/>
		<field name="act_window_id" ref="action_calendar_form"/>
	</record>
	<record model="ir.actions.act_window.view" id="kw_meeting_act_window_view_form">
		<field name="sequence" eval="2"/>
		<field name="view_mode">form</field>
		<field name="view_id" ref="kw_view_calendar_event_form"/>
		<field name="act_window_id" ref="action_calendar_form"/>
	</record>
	<record id="calendar.action_calendar_event" model="ir.actions.act_window">
		<field name="context">{'search_default_mymeetings': 1}</field>
	</record>
	<!-- <menuitem id="menu_kw_mettings" name="Meetings" parent="hr_recruitment.menu_hr_recruitment_root"
	          action="action_calendar_form"/> -->
</odoo>