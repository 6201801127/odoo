<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view for "model" -->
        <record id="kw_recruitment_location_tree" model="ir.ui.view">
            <field name="name">kw_recruitment_location.tree</field>
            <field name="model">kw_recruitment_location</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree create="true" delete="true" edit="true" editable="top">
                    <field name="company_id" invisible="1"/>
                    <field name="name"/>
                    <field name="kw_branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}" />
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Form view for "model" -->
        <record id="kw_recruitment_location_form" model="ir.ui.view">
            <field name="name">kw_recruitment_location.form</field>
            <field name="model">kw_recruitment_location</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form create="true" delete="false" edit="true" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                       groups="base.group_no_one"/>
                                <field name="kw_branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="kw_recruitment_location_search" model="ir.ui.view">
            <field name="name">view.model.search</field>
            <field name="model">kw_recruitment_location</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name"/>
                    <field name="branch_id"/>
                </search>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="kw_recruitment_location_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Recruitment Location</field>
            <field name="res_model">kw_recruitment_location</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
            <field name="search_view_id" ref="kw_recruitment_location_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new location.
                </p>
            </field>
        </record>

        <!-- Main menu for "model" -->
        <record id="menu_kw_recruitment_location" model="ir.ui.menu">
            <field name="name">Recruitment Location</field>
            <field name="sequence" eval="10"/>
            <field name="action" ref="kw_recruitment_location_act_window"/>
            <field name="parent_id" ref="hr_recruitment.menu_hr_recruitment_configuration"/>
        </record>
    </data>
</odoo>
    
