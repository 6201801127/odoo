<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="applicant_otp_template" model="send_sms">
            <field name="name">applicant_OTP</field>
            <field name="gateway_id" model="gateway_setup" search="[('name','=','Bulksms_Gateway')]"/>
            <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
            <field name="sms_to">${object.partner_mobile}</field>
            <field name="sms_html">Hello ${object.partner_name}, your otp is ${object.otp_number}.</field>
       </record>
    </data>
</odoo>