			<field name="name">hr.recruitment.stage.form</field>
			<field name="model">hr.recruitment.stage</field>
			<field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group/group/field[@name='name']" position="after">
					<field name="code"/>
				</xpath>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_recruitment_stage_tree_inherit">
			<field name="name">kw.recruitment.stage.form.inherit</field>
