            <field name="inherit_id" ref="utm.utm_source_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code"/>
					<field name="source_type"/>
					<field name="kw_id"/>
                </xpath>
            </field>
        </record>

		<record id="kw_recruitment_utm_model_search" model="ir.ui.view">
			<field name="name">utm.source.model.search</field>
			<field name="model">utm.source</field>
			<field name="arch" type="xml">
				<search string="Search Source type">
					<field name="source_type" string="Source Type"/>
					<filter string="Source (Recruitment)" domain="[('source_type','=','recruitment')]" name="source_type_filter"/>
				</search>
			</field>
		</record>
		<record id="utm.utm_source_action" model="ir.actions.act_window">
			<field eval="2" name="sequence"/>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="utm.utm_source_view_tree"/>
			<field name="act_window_id" ref="utm.utm_source_action"/>
			<field name='search_view_id' ref='kw_recruitment_utm_model_search'/>
			<field name="context">{"search_default_source_type_filter":1}</field>
		</record>

		<menuitem action="utm.utm_source_action" id="utm.menu_utm_source"
				  parent="hr_recruitment.menu_hr_recruitment_configuration" sequence="4" groups="base.group_no_one"/>

		<record id="business_unit_tree" model="ir.ui.view">
			<field name="name">Business Unit Tree</field>
			<field name="model">kw_business_unit</field>
			<field name="arch" type="xml">
				<tree string="Business Unit" editable="top">
					<field name="sequence" widget="handle"/>
					<field name="name"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>

		<record id="business_unit_form" model="ir.ui.view">
			<field name="name">Business Unit Form</field>
			<field name="model">kw_business_unit</field>
			<field name="arch" type="xml">
				<form string="Business Unit">
					<sheet>
						<group>
							<field name="name"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_business_unit" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Business Unit</field>
			<field name="res_model">kw_business_unit</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="domain">['|',('active','=', True),('active','=', False)]</field>
		</record>

		<menuitem name="Business Unit" parent="hr_recruitment.menu_hr_recruitment_configuration" id="menu_business_unit"
				  action="action_business_unit"/>

	</data>
</odoo>
