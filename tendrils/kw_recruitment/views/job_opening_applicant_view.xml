<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ijp_applicant_tree_view" model="ir.ui.view">
            <field name="name">ijp_hr_applicant_view_tree</field>
            <field name="model">hr.applicant</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <tree string="Applicants" create='false' edit='false' import='false'>
                    <field name="create_date" string="Applied Date" widget="date"/>
                    <field name="partner_name" string="Name"/>
                    <field name="partner_mobile" string="Contact"/>
                    <field name="job_position" string="Job Position"/>
                    <field name="source_id" string="Source"/>
                    <field name="employee_referred" string='Referred By'/>
                    <field name="stage_id" string="Status"/>
                </tree>
            </field>
        </record>
        <record id="internal_job_opening_kanban" model="ir.ui.view">
            <field name="name">ijp_hr_applicant_view_kanban</field>
            <field name="model">hr.applicant</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_hr_recruitment_kanban">
                    <field name="partner_name"/>
                    <field name="job_position"/>
                    <field name="partner_mobile"/>
                    <field name="email_from"/>
                    <field name="stage_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card_content oe_kanban_global_click" style="height:200px;">
                                <table class="table table-borderless">
                                    <tr style="font-size:12px;">
                                        <td style="width:32%;">
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-user-o"/>
                                            <b>&amp;nbsp;&amp;nbsp;Name</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="partner_name"/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:12px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-check-square-o"/>
                                            <b>&amp;nbsp;&amp;nbsp;Position</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="job_position"/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:12px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-phone"/>
                                            <b>&amp;nbsp;&amp;nbsp;Phone</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="partner_mobile"/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:12px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-envelope"/>
                                            <b>&amp;nbsp;&amp;nbsp;Email</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="email_from"/>
                                        </td>
                                    </tr>
                                    <tr style="font-size:12px;">
                                        <td>
                                            <i style="color:rgb(22, 123, 158);" class="fa fa-line-chart"/>
                                            <b>&amp;nbsp;&amp;nbsp;Progress</b>
                                        </td>
                                        <td>
                                            <b>:</b>
                                        </td>
                                        <td>
                                            <field name="stage_id"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
