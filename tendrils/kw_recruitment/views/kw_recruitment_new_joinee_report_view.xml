<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_recruitment_new_joinee_tree">
            <field name="name">System Arrangements New joinee</field>
            <field name="model">hr.applicant</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="partner_name" string='Name'/>
                    <field name="job_id" string='Designation'/>
                    <field name="department_id" string='Dept.'/>
                    <field name="job_location_id" string='Location'/>
                    <field name="employee_type" string='Employment'/>
                    <field name="hiring_type" string='Hiring Type'/>
                    <field name="employee_id" string='Replacement of'/>
                    <field name="availability" string='DOJ'/>
                    <field name="stage_id" string='Status'/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_recruitment_new_joinee_view_tree">
            <field name="name">New Joinee Report</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_recruitment_new_joinee_tree"/>
        </record>

        <menuitem parent="hr_recruitment.report_hr_recruitment"
                  id="new_joinee_report_menu"
                  name="System Arrangements New joinee Report"
                  action="action_recruitment_new_joinee_view_tree"/>

    </data>
</odoo>