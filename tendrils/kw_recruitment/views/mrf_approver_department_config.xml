<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrf_approver_department_config" model="ir.ui.view">
            <field name="name">mrf_approver_department_config.tree</field>
            <field name="model">mrf_approver_department_config</field>
            <field name="arch" type="xml">
                <tree string="MRF Approver Department Configuration" editable='bottom'>
                    <field name="department_ids" widget="many2many_tags"/>
                    <field name="approver_id"/>
                    <field name="allowed" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_mrf_approver_department_config" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">MRF Approver Department Configuration Master</field>
            <field name="res_model">mrf_approver_department_config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="MRF Approver Department Configuration Master"
                  parent="kw_recruitment.menu_mrf_configuration_root"
                  id="mrf_approver_department_config_menu"
                  action="action_mrf_approver_department_config"/>

    </data>
</odoo>