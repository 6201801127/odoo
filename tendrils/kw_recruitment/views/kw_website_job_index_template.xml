<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="kw_recruitment_index" inherit_id="website_hr_recruitment.index">
            <xpath expr="//section[@class='mb16']" position="replace">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center mb16">
                            <h2>We are hiring!</h2>
                        </div>
                        <div class="col-lg-8 mx-auto text-justify">
                            <p>
                                CSM Technologies is a principle based organization, 
                                looking for talent-driven people to leave their mark with them. 
                                In the process of community service, CSM Technologies also endeavors to 
                                award equal opportunity and more to citizens.
                            </p>
                        </div>
                    </div>
                </div>
            </xpath>

            
        </template>

        <template id="kw_view_jobs" inherit_id="website_hr_recruitment.index">
			<xpath expr="//div[@id='jobs_grid']" position="replace">

				<!-- <div class="col-sm-12" t-if="not jobs">
					<div class="text-center text-muted">
						<h3 class="css_editable_hidden">
							<a t-attf-href="/contactus">Contact us</a> for job opportunities.
						</h3>
						<h4 groups="hr_recruitment.group_hr_recruitment_manager">
							Create new job pages from the <strong><i>+New</i></strong> top-right button.
						</h4>
					</div>
				</div> -->

				<div class="col-sm-12" t-if="jobs">
					<div class="container-fluid">
						<t t-foreach="jobs" t-as="job">
							<div id="wrap" class="js_hr_recruitment">
								<div class="career-details">
									<div class="container">
										<div class="row mt-5">
											<div class="col-lg-8 col-md-12 col-sm-12 mx-auto">               
												<div class="latest-job" t-att-data-publish="job.website_published and 'on' or 'off'">
													<a t-attf-href="/jobs/detail/#{ slug(job) }" class="text-dark">
														<div class="latest-tab border-left-yellow"> 
															<h3 class="font-weight-bold" t-field="job.title"></h3>
															<div class="mb-4">
																<span class="mr-2"><i class="fa fa-map-marker mr-2" aria-hidden="false"></i> 
																	<!-- <span t-field="job.address_id" t-options='{
																		"widget": "contact",
																		"fields": ["city"],
																		"no_tag_br": True
																		}'/> -->
																	<t t-if="job.address_id and len(job.address_id) &gt; 1">
																		<t t-esc="job.address_id[0].name"/>
																		<t t-foreach="job.address_id[1:]" t-as="loc">
																			<t t-esc="', '+loc.name"/>
																		</t>
																	</t>

																	<t t-else="">
																		<t t-esc="job.address_id[0].name"/>
																	</t>
																</span>
																<span class="span-block" t-if="job.industry_type">
																	<i class="fa fa-folder-o mr-1" aria-hidden="false"></i>
																	<t t-esc="job.industry_type.name"/>

																</span>
																<!-- <span class="span-block"><i class="fa fa-folder-o mr-2" aria-hidden="false"></i> IT Infrastructure </span> -->
															</div>
															<p class="mb-4" t-esc="job.summary"></p>
														</div>
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</t>
					</div>
				</div>
			</xpath>
		</template>
		<template id="job_index_styles" inherit_id='kw_recruitment.kw_view_jobs'>
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/kw_recruitment/static/src/css/home.css" />
				<link rel="stylesheet" href="/kw_recruitment/static/src/css/inner.css" />
				<link rel="stylesheet" href="/kw_recruitment/static/src/css/common.css" />
				<link rel="stylesheet" href="/kw_recruitment/static/src/css/career.css" />
				<script src="kw_recruitment/static/src/js/common.js"/>
			</xpath>
		</template>

    </data>
</odoo>
