<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_kw_job_category" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Job Category</field>
            <field name="res_model">kw_job_category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>

        <record id="view_kw_job_category" model="ir.ui.view">
            <field name="name">kw_job_category.tree</field>
            <field name="model">kw_job_category</field>
            <field name="arch" type="xml">
                <tree string="Employee Category">
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_kw_job_category_form" model="ir.ui.view">
            <field name="name">kw_job_category.form</field>
            <field name="model">kw_job_category</field>
            <field name="arch" type="xml">
                <form string="Employee Status" duplicate="false">
                    <sheet>
                        <group>
                           
                                <field name="name"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Job Category" parent="hr_recruitment.menu_hr_recruitment_configuration" id="menu_kw_job_category_menu" action="action_kw_job_category"/>

    </data>
</odoo>