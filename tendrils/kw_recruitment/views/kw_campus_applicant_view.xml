<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_kw_recruitment_campus_applicant">
            <field name="name">Campus Drive Applicants</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">kanban,tree,form,pivot,graph,calendar,activity</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="hr_recruitment.view_crm_case_jobs_filter"/>
            <field name="context">{}</field>
            <field name="domain">[('source_id.code','=','institute')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No applications yet
                </p>
                <p>
                    Odoo helps you track applicants in the recruitment
                    process and follow up all operations: meetings, interviews, etc.
                </p>
                <p>
                    Applicants and their attached CV are created automatically when an email is sent.
                    If you install the document management modules, all resumes are indexed automatically,
                    so that you can easily search through their content.
                </p>
            </field>
        </record>

        <menuitem id="menu_kw_recruitment_campus_applicants"
                  parent="hr_recruitment.menu_crm_case_categ0_act_job"
                  name="Campus Drive"
                  action="action_kw_recruitment_campus_applicant" sequence="10"/>
    </data>
</odoo>