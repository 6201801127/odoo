<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cv_skill_master_tree" model="ir.ui.view">
            <field name="name">CV Skill Tree</field>
            <field name="model">cv_skill_master</field>
            <field name="arch" type="xml">
                <tree string="CV Skill">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="cv_skill_master_form" model="ir.ui.view">
            <field name="name">CV Skill Form</field>
            <field name="model">cv_skill_master</field>
            <field name="arch" type="xml">
                <form string="CV Skill">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_cv_skill_master_kw" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">CV Skills</field>
            <field name="res_model">cv_skill_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="CV Skill Master"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  id="cv_skills_master_menu"
                  groups="base.group_no_one"
                  sequence="601"
                  action="action_cv_skill_master_kw"/>

        <record id="cv_qualification_master_tree" model="ir.ui.view">
            <field name="name">CV Qualification Tree</field>
            <field name="model">cv_qualification_master</field>
            <field name="arch" type="xml">
                <tree string="CV Qualification">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="cv_qualification_master_form" model="ir.ui.view">
            <field name="name">Job Portal Form</field>
            <field name="model">cv_qualification_master</field>
            <field name="arch" type="xml">
                <form string="Job Portal">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_cv_qualification_master_kw" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">CV Qualifications</field>
            <field name="res_model">cv_qualification_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="CV Qualification Master"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  id="cv_qualification_master_menu"
                  groups="base.group_no_one"
                  sequence="603"
                  action="action_cv_qualification_master_kw"/>

    </data>
</odoo>