<odoo>
  <data>
        <record id="screening_wizard_form" model="ir.ui.view">
        <field name="name">Screening Wizard Form</field>
        <field name="model">cvscreening_wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="job_position" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                        <field name="applicants_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1" />
                        <field name="pannel_memb" options="{'no_open': True,'no_create':True,'no_edit':True}" required="1"/>
                    </group>    
                </sheet>
                <footer>    
                    <button string="Send Notification" name="send_mail_to_panel_for_screen" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
        </record>

    <record id="screening_view_action_window" model="ir.actions.act_window">
        <field name="name">Panel Member screening Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cvscreening_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="screening_wizard_form"/>
        <field name="target">new</field>
    </record>

      <menuitem name="CV Screening"
                parent="hr_recruitment.menu_crm_case_categ0_act_job"
                id="menu_cv_screening_menu"
                action="screening_view_action_window"
                groups="hr_recruitment.group_hr_recruitment_manager,kw_recruitment.group_hr_recruitment_consultant,kw_recruitment.group_hr_recruitment_executive"
                sequence="191"/>

    </data>
</odoo>

