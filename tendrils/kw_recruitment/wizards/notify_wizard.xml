<odoo>
  <data>
        <record id="notify_view_wizard_form" model="ir.ui.view">
        <field name="name">Notify Wizard Form</field>
        <field name="model">notify_wizard</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <field name="hide_panel" invisible='1'/>
                    <field name="applicant_ids" invisible='1'/>
                    <field name="pending_panel_member_ids" invisible='1'/>

                    <div attrs="{'invisible': [('pending_panel_member_ids', '!=', [])]}">
                        <h3 class="text-danger text-center"> Are You Sure,You want to continue.?  </h3>
                    </div>
                    <div attrs="{'invisible': [('pending_panel_member_ids', '=', [])]}">
                        <h3 class="text-danger text-center"> Panel Member of the all applicants are not set </h3>
                        <h3 class="text-danger text-center"> Please Set the pannel Member of the following applicants. </h3>
                        <br/>
                        <group>
                            <field string="Set Panel Member for" name="pending_panel_member_ids" widget='many2many_tags' readonly="1"/>
                        </group>
                    </div>
                </sheet>
                <footer>    
                    <button string="Send" name="update_stage" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
        </record>

    <record id="notify_view_action_window" model="ir.actions.act_window">
        <field name="name">Create Notify Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">notify_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="notify_view_wizard_form"/>
        <field name="target">new</field>
    </record>

    </data>
</odoo>

