<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrf_approve_view" model="ir.ui.view">
        <field name="name">Approve</field>
        <field name="model">kw.mrf.final.approve</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                    <!--  <strong><p style="color: #ff0000; font-size: 14px;" attrs="{'invisible': [('check_salary','=',False)]}">
                         Extra load on budget is INR <field name='extra_load_on_budget' readonly="1"/>. Do you want to proceed?</p>
                     </strong> -->
<!-- attrs="{'invisible': [('check_salary','=',True)]}" -->
                    <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><center>Are you sure you want to do?</center></p>
                        <field name="check_salary" invisible="1"/>
                        <field name="note" invisible="1"/>
                <footer class="text-center">
                    <button name="save_message" string="Okay" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="final_mrf_approve_view" model="ir.ui.view">
        <field name="name">Approve</field>
        <field name="model">kw.mrf.final.approve</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                    <script>
	        			$(document).ready(function(){
	                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
	                    });
	        		</script>
                    <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><center>This is Final Approval for this MRF. <br></br>Are you sure, you want to Approve?</center></p>
                        <field name="check_salary" invisible="1"/>
                        <field name="note"  invisible="1"/>
                <footer class="text-center">
                    <button name="save_message" string="Yes" type="object" class="btn-success" context="{'manpower':'True'}"/>
                    <button name="cancel" string="No" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

