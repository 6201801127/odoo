    <record id="mrf_bugetwarning_view" model="ir.ui.view">
        <field name="name">Warning</field>
        <field name="model">display.message</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                     <!-- <strong><p style="color: #ff0000; font-size: 14px;">
                         Extra load on budget is INR <field name='extra_load_on_budget' readonly="1"/>. Do you want to proceed?</p>
                     </strong> -->
                    <group>
                        <field name='extra_load_on_budget' invisible="1"/>
                        <field name='mrf_id' invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="save_message" string="Okay" type="object" class="btn-success"/>
                    <button name="cancel" string="Cancel" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
