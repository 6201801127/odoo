<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mif_approve_view" model="ir.ui.view">
        <field name="name">Approve</field>
        <field name="model">notify_wizard_approved</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                    <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><center>Are you sure, you want to Approve this MIF?</center></p>
                        <field name="mif_id"  invisible="1"/>
                        <field name="remarks"  invisible="0"/>
                <footer class="text-center">
                    <button name="approve_confirm_action" string="Confirm" type="object" class="btn-success"/>
                    <button string="Cancel" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="mif_grant_view" model="ir.ui.view">
        <field name="name">Granted</field>
        <field name="model">notify_wizard_approved</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                    <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><center>Are you sure, you want to Grant this MIF?</center></p>
                        <field name="mif_id"  invisible="1"/>
                        <field name="remarks"  invisible="0"/>
                <footer class="text-center">
                    <button name="approve_confirm_action" string="Confirm" type="object" class="btn-success"/>
                    <button string="Cancel" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="mif_reject_view" model="ir.ui.view">
        <field name="name">Reject</field>
        <field name="model">notify_wizard_approved</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                    <script>
                        $(document).ready(function(){
                            $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                    <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                        <center>Are you sure, you want to Reject this MIF?</center>
                    </p>
                    <p style="line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                        <center>Please specify reason.</center>
                    </p>
                        <field name="mif_id"  invisible="1"/>
                        <field name="remarks"  invisible="0"/>
                <footer class="text-center">
                    <button name="approve_confirm_action" string="Confirm" type="object" class="btn-success"/>
                    <button string="Cancel" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
