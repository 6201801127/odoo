<?xml version="1.0"?>
<odoo>
    <act_window id="kw_recruitment.applicant_meeting_schedule" 
    name="Schedule Meeting" 
    src_model="hr.applicant" 
    res_model="kw_applicant_meeting" 
    view_mode="form" 
    target="new" 
    multi="True"/>


    <record id="kw_applicant_meeting_wizard" model="ir.ui.view">
        <field name="name">Schedule Meeting Form</field>
        <field name="model">kw_applicant_meeting</field>
        <field name="arch" type="xml">
            <form string="Meeting details">
                <group>
                        <field name="applicant_ids" widget="many2many_tags" readonly="1" options="{'no_edit': True, 'no_create':True, 'no_open':True}"/>
                        <field name="partner_ids"  widget="many2many_tags" options="{'no_edit': True, 'no_create':True, 'no_open':True}"/>
                        <field name="survey_id" string="Interview Form" required="True" options="{'no_edit': True, 'no_create':True, 'no_open':True}"/>
                        <field name="start_datetime"/>
                        <field name="duration" widget="float_time"/>
                        <field name="location" />
                </group>
                <footer>
                    <button name="schedule_meeting" string="Schedule" type="object" class="oe_highlight" />
                    Or      
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>