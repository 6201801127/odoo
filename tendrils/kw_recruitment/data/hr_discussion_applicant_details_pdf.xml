
<openerp>
    <data>
        
        <template id="hr_discussion_certifcate_download_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div style="width: 70%; margin: 0 auto;"> <!-- Adjusting the width of the main content -->
                        <t t-as="o" t-foreach="docs">
                            <div style="font-family: Arial, sans-serif; color: #333; margin: 0; padding: 0;">
                                <div style="overflow: hidden; margin-bottom: 15px; padding-bottom: 10px; border-bottom: 2px solid #003366;">
                                    <img src="/kw_recruitment/static/src/img/offerletterlogo.png" alt="" style="height: 60px; float: right; margin-left: 20px;" />
                                    <h2 style="text-align: left; color: #003366; margin-top: 0; font-weight: bold; font-size: 24px;">
                                        CSMPL HR Discussion Form : <t t-esc="o.applicant_id.partner_name"/>
                                    </h2>
                                </div>
                                <table style="width: 100%; border-collapse: collapse; border: 1px solid #ccc; margin-bottom: 15px; font-size: 15px;">
                                    <tbody>
                                        <tr style="background-color: #e6f2ff;">
                                            <td style="border: 1px solid #ccc; width: 50%; padding: 15px; text-align: left; font-weight: normal;">Designation</td>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                <t t-esc="o.designation_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Department</td>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                <t t-esc="o.department.name"/>
                                            </td>
                                        </tr>
                                        
                                        <tr style="background-color: #e6f2ff;">
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Date of Joining</td>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                <t t-esc="o.date_of_joining.strftime('%d-%b-%Y')"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Job Location</td>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                <t t-esc="o.job_location.name"/>
                                            </td>
                                        </tr>

                                        <tr style="background-color: #e6f2ff;">
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Employment Type</td>
                                            <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                <t t-esc="o.employment_type"/>
                                            </td>
                                        </tr>
                                        <t t-if="o.contract_duration">
                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Contract Duration (in months)</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.contract_duration"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <t t-if="o.traineeship_duration">
                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Traineeship Duration (in months)</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.traineeship_duration"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.service_agreement_required">
                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Service Agreement </td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.service_agreement_required"/>
                                                </td>
                                            </tr>
                                        </t>
                                        
                                        <t t-if="o.service_agreement">
                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Service Agreement (in Months)</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.service_agreement"/>
                                                </td>
                                            </tr>
                                        </t>
                                        

                                        <t t-if="o.probation">

                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Probation (in months)</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.probation"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.appraisal_eligibility">

                                            <tr style="background-color: #e6f2ff;">
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Appraisal Eligibility</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-if="o.appraisal_eligibility == 'post_completeion'" t-set="appraisal_eligibility_label">Post completion of Probation Period</t>
                                                    <t t-if="o.appraisal_eligibility == 'post_completion_traineeship'" t-set="appraisal_eligibility_label">Post Completion of Traineeship Period</t>

                                                    <t t-esc="appraisal_eligibility_label"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.increment_eligibility">

                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Increment Eligibility</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.increment_eligibility.strftime('%d-%b-%Y')"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.open_for_travel">

                                            <tr style="background-color: #e6f2ff;">
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Open for Travel (Int / Dom)</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-if="o.open_for_travel == '1'"> <t t-esc="dict([('0', 'No'), ('1', 'Yes')])[o.open_for_travel]"/></t>
                                                    <t t-if="o.open_for_travel == '0'"> <t t-esc="dict([('0', 'No'), ('1', 'Yes')])[o.open_for_travel]"/></t>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.relocation">
                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Relocation (ST / LT)</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-if="o.relocation == '1'" t-set="relocation_label">Yes</t>
                                                    <t t-if="o.relocation == '0'" t-set="relocation_label">No</t>
                                                    <t t-esc="relocation_label"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.non_joining_clients_competitors">
                                        
                                            <tr style="background-color: #e6f2ff;">
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Non-Joining Clients &amp; Competitors</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-if="o.non_joining_clients_competitors == 'two_years_from_separation'" t-set="non_joining_clients_competitors_label">Till 2 Years From the date of exit.</t>
                                                    <t t-esc="non_joining_clients_competitors_label"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.annual_compensation">
                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Annual Compensation</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-esc="o.currency_id.symbol+ ' ' + str(o.annual_compensation)"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <h2 style="text-align: left; color: #003366; margin-top: 15px; font-weight: bold; font-size: 18px;">Benefits</h2>
                                <table style="width: 100%; border-collapse: collapse; border: 1px solid #ccc; margin-bottom: 15px; font-size: 15px;">
                                    <tbody>
                                        <t t-if="o.provident_fund">
                                        
                                            <tr style="background-color: #e6f2ff;">
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Provident Fund</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-if="o.provident_fund == '12_%_basic'" t-set="provident_fund_label">12% of Basic to be deducted each from Employee and Employer part.</t>
                                                    <t t-if="o.provident_fund == '1800_inr_to_be_deducted'" t-set="provident_fund_label">1800 INR to be deducted each from Employee and Employer part.</t>

                                                    <t t-if="o.provident_fund == 'not_applicable'" t-set="provident_fund_label">Not Applicable</t>

                                                    <t t-esc="provident_fund_label"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <t t-if="o.gratuity">

                                            <tr>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Gratuity</td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                
                                                    <t t-if="o.gratuity == 'to_be_deducted'" t-set="gratuity_label">To be deducted as per Gratuity Act, 1972 </t>

                                                    <t t-esc="gratuity_label"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="o.health_insurance">
                                            <tr style="background-color: #e6f2ff;">
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: left; font-weight: normal;">Health Insurance </td>
                                                <td style="border: 1px solid #ccc; padding: 15px; text-align: center;">
                                                    <t t-if="o.health_insurance == 'health_insurance'" t-set="health_insurance_label">Health Insurance of 3 Lacs Coverage for Employee sponsored by CSM.</t>

                                                    <t t-if="o.health_insurance == 'esi'" t-set="health_insurance_label">ESI</t>
                                                    <t t-if="o.health_insurance == 'not_applicable'" t-set="health_insurance_label">Not Applicable</t>

                                                    <t t-esc="health_insurance_label"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </template>


        <record id="hr_discussion_paperformat_certificate" model="report.paperformat">
            <field name="name">Hr Discussion Paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_spacing">0</field>
            <field name="dpi">110</field>
        </record>
        <report file="HR Discussion"
                id="download_hr_discussion_certification"
                menu="False"
                model="hr_discussion_applicant_details"
                name="kw_recruitment.hr_discussion_certifcate_download_template"
                report_type="qweb-pdf"
                string="HR Discussion"
                paperformat="kw_recruitment.hr_discussion_paperformat_certificate"/>


