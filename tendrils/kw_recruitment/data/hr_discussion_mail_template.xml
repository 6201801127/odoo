<odoo>
    <data>
        <record id="hr_discussion_mail_template" model="mail.template">
            <field name="name">HR Discussion Mail Template</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="subject">HR Discussion | CSM Technologies</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_cc">${user.email},ratandeep.mohanty@csm.tech,sushree.dash@csm.tech</field>
            <field name="email_to">${(object.email_from or '')|safe}</field>
            <field name="body_html">
               <![CDATA[
                    <div style="padding-left: 20px;">
                        <p>
                            <b>
                                <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;">Dear</span>
                                <span style="font-size: 18px;">${object.partner_name},</span>
                            </b>
                        </p>
                        <p>
                            Please find the enclosed HR Discussion form duly filled during the HR round. Please acknowledge and share your consent to process further.
                        </p>
                        <p>This form should not be considered an offer, unless you get an Offer letter, specifically mentioned from us.
                        </p>
                       
                        <table border="0" style="width: 100%;">
                                <tr>
                                    <td style="padding-left: 20px;">
                                        <a href="/recruitment/hr/discussion/approve?db=${'dbname' in ctx and ctx['dbname'] or ''}&amp;token=${'token' in ctx and ctx['token'] or ''}&amp;id=${object.id}&amp;discuss_id=${'discussion_id' in ctx and ctx['discussion_id'] or ''}"
                                            target="_blank"
                                            style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #098bb9;font-size: 16px;display:inline-block;white-space: nowrap;text-decoration: NONE;">
                                            Accept
                                        </a> &nbsp;
                                        
                                        <a href="/recruitment/hr/discussion/reject?db=${'dbname' in ctx and ctx['dbname'] or ''}&amp;token=${'token' in ctx and ctx['token'] or ''}&amp;id=${object.id}&amp;discuss_id=${'discussion_id' in ctx and ctx['discussion_id'] or ''}"
                                            target="_blank"
                                            style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #ff0000;font-size: 16px;display:inline-block;white-space: nowrap;text-decoration: NONE;">
                                            Decline
                                        </a>
                                    </td>
                                </tr>
                        </table>
                        <div>
                            <p>Thanks & Regards,</p>
                            <p>CSM Technologies Pvt. Ltd.</p>
                        </div>
                    </div>
                ]]>

                
            </field>
        </record>

        <record id="hr_discussion_acceptance_mail_template" model="mail.template">
            <field name="name">HR Discussion Mail Template</field>
            <field name="subject">HR Discussion Accepted | ${object.partner_name} | CSM Technologies </field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <!-- <field name="email_cc">${ctx['cc_emails']}</field> -->
            <field name="email_cc">ratandeep.mohanty@csm.tech,sushree.dash@csm.tech</field>
            <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
               <![CDATA[
                    <div style="padding-left: 20px;">
                        <p>
                            <b>
                                <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;">Dear</span> HR,
                               
                            </b>
                        </p>
                       
                            <p>HR Discussion Form has been Accepted by <b>${object.partner_name}</b>  on <b>${ctx['acceptance_date']}</b>.</p>

                        <div>
                            <p>Thanks & Regards,</p>
                            <p>CSM Technologies Pvt. Ltd.</p>
                        </div>
                    </div>
                ]]>

                
            </field>
        </record>
        <record id="hr_discussion_decline_mail_template" model="mail.template">
            <field name="name">HR Discussion Mail Template</field>
            <field name="subject">HR Discussion Declined | ${object.partner_name} | CSM Technologies </field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <!-- <field name="email_cc">${ctx['cc_emails']}</field> -->
            <field name="email_cc">ratandeep.mohanty@csm.tech,sushree.dash@csm.tech</field>
            <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
               <![CDATA[
                    <div style="padding-left: 20px;">
                        <p>
                            <b>
                                <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;">Dear</span> HR,
                               
                            </b>
                        </p>
                         </p>
                            <p>HR Discussion Form has been Declined by <b>${object.partner_name}</b>  on <b>${ctx['rejection_date']}</b>.</p>

                       
                        <div>
                            <p>Thanks & Regards,</p>
                            <p>CSM Technologies Pvt. Ltd.</p>
                        </div>
                    </div>
                ]]>

                
            </field>
        </record>
