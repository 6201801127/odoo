<?xml version="1.0" encoding="utf-8"?>
<data>
    <odoo>
        <template id="kw_recr_applicant_shortlisted" name="Shortlisted Applicant">
            <t t-call="website.layout">
                <div class="wrap">
					<div class="container">
						<section class="service-request mt32">

                            <div class="container card">
                                <div class="card-body">
									<div class="row">
										<div class="col-12 mx-auto">
											<div class="section_content">
                                                <div class="modal-header d-flex justify-content-between text-center align-items-center">
                                                    <div class="">
                                                        <img src="/kw_recruitment/static/src/img/offerletterlogo.png" />

                                                        <span class="h1 ml-5">
                                                            Shortlisted
                                                        </span>
                                                    </div>
                                                </div>
                                                <br/>
                                                <h2 class="display-6 text-center font-weight-bold mt-6 mb-4">
                                                    Thank you for Shortlisting the Applicant !!
                                                    <br/>
                                                </h2>
											</div>
										</div>
									</div>
								</div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>

        <record id="applicant_shortlist_mail_template" model="mail.template">
           <field name="name">Shortlist Mail</field>
           <field name="email_from">${object.env.user.email or ''}</field>
           <field name="subject">Recruitment | Applicant shortlisted | ${object.partner_name}</field>
           <field name="email_to">${ctx['emails']}</field>
           <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
           <field name="auto_delete" eval="False"/>
           <field name="body_html">
            <![CDATA[
            <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${object.responsible_id.name}</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                               The Applicant <strong>${object.partner_name}</strong> has been Shortlisted.
                            </p>
                            <br/>

                            <p style="color: rgb(22, 123, 158);line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><strong>Applicant Details:</strong></p><br/>
                            <br/>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                % if object.name:
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td>
                                            ${object.partner_name}
                                        </td>
                                    </tr>
                                % endif

                                % if object.partner_mobile:
                                  <tr>
                                      <td><strong>Mobile</strong></td>
                                      <td>
                                            ${object.partner_mobile}
                                      </td>
                                  </tr>
                                % endif
                                % if object.email_from:
                                    <tr>
                                        <td><strong>Email</strong></td>
                                        <td>
                                            ${object.email_from}
                                        </td>
                                    </tr>
                                % endif
                                <tr>
                                    <td><strong>Job Position</strong></td>
                                    <td>
                                        % if object.job_position.title:
                                            ${object.job_position.title}
                                        % else:
                                            NA
                                        % endif
                                    </td>
                                </tr>

                                </tbody>
                            </table>
                            <br/>
                        <div style="margin-bottom:1em;">
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">Click the below button to view the applicant details</p>
                            <div style="margin: 16px 0px 16px 0px;">
                                <a href="/web#id=${ctx['record_id']}&action=${ctx['view_id']}&amp;model=hr_applicant&amp;view_type=form" style="background-color: rgb(22, 123, 158); padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;" target="new">
                                    View Details
                                </a>
                            </div>
                        </div>
                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                <strong>Thanks & regards <br/>
                                        CSM Technologies Pvt. Ltd.
                                </strong>
                            </p>
                             <br/>
                            <p style="color:rgb(22, 123, 158);font-size: 14px;margin-bottom: 0px;">This is a system generated mail. Please Do not reply to this mail.</p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>
        </field>
    </record>
