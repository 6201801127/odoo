                                        ${object.dept_name.name}
                                    </td>
                                </tr>
                            % endif
                            % if object.sbu_id:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        SBU/Horizontal
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.sbu_id.display_name}
                                    </td>
                                </tr>
                            % endif
                        
                            % if object.project:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Project Name
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.project.name}
                                    </td>
                                </tr>
                            % endif
                            % if (object.engagement_period) == 'Specified_period' and (object.months > 0) and (object.year > 0)  :
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Engagement Period Year/Month
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.year} Year  ${object.months} Months
                                    </td>
                                </tr>
                            %elif (object.engagement_period):
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Engagement Period
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.engagement_period} 
                                    </td>
                                </tr>

                            % endif
                            % if object.job_position:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Position
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.job_position.name}
                                    </td>
                                </tr>
                            % endif
                            % if object.qualification:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Qualification
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.qualification}
                                    </td>
                                </tr>
                            % endif
                            % if (object.min_exp_year != False) and (object.max_exp_year != False):
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Experience
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                    % if (object.min_exp_year == '0') and (object.max_exp_year == '0'):
                                        Fresher
                                    % endif
                                    % if (object.min_exp_year != '0') or (object.min_exp_year == '0') and (object.max_exp_year != '0'):
                                        ${object.min_exp_year} - ${object.max_exp_year} Years
                                    % endif
                                    </td>
                                </tr>
                            % endif

                            % if object.no_of_resource:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        No. of Requirements
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        % if object.no_of_resource:
                                            ${object.no_of_resource}
                                        % endif
                                    </td>
                                </tr>
                            % endif
                            % if object.branch_id:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Work Location
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${', '.join(object.branch_id.mapped('name'))}

                                    </td>
                                </tr>
                            % endif
                            % if object.resource:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Hiring Type
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${dict (object.fields_get (allfields = ['resource']) ['resource'] ['selection']) [object.resource]}
                                    </td>
                                </tr>
                            % endif
                            % if object.employee_id:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Replacement For
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        % for rec in object.employee_id:
                                            ${rec.name},
                                        % endfor
                                    </td>
                                </tr>
                            % endif
                            % if object.type_recruitment:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Employment Type
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.type_recruitment}
                                    </td>
                                </tr>
                            % endif
                            % if object.effective_date_of_deployment:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Date of Deployment
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.effective_date_of_deployment.strftime('%d-%b-%Y')}
                                    </td>
                                </tr>
                            % endif
                            % if object.it_infra_provision:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                       IT infra provision
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.it_infra_provision}
                                    </td>
                                </tr>
                            % endif
                            % if object.description:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                       Remarks
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.description}
                                    </td>
                                </tr>
                            % endif
                        </table>
                    </div>
                    &nbsp;
                ]]>
            </field>
			<!-- <field name="user_signature" eval="False"/> -->
		</record>
    </data>
</odoo>
