<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="mail_notify_to_take_action" model="mail.template">
			<field name="name">Approval Request</field>
			<field name="model_id" ref="kw_recruitment.model_kw_manpower_indent_form"/>
			<field name="auto_delete" eval="False"/>
			<field name="email_from">${object.req_raised_by_id.work_email}</field>
			<field name="email_to">${ctx['mail_to']}</field>
			<field name="email_cc">${ctx['mail_cc']}</field>
			<field name="subject">MIF Raised | Ref No ${object.code}</field>
			<field name="body_html">
                <![CDATA[
                    <div style="padding-left: 20px;">
                        <p>
                            <b>
                               <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Hi, </span>
                            </b>
                        </p>
                        % if ctx['mail_for'] == 'Applied':
                            <p style="font-size: 17px;">
                                Please find the MIF below raised by
                                <strong><b>${object.req_raised_by_id.display_name}</b></strong>.
                                Please approve it for further proceedings.
                            </p>
                        % elif ctx['mail_for'] == 'SBU_applied':
                            <p style="font-size: 17px;">
                                Please find the MIF below raised by
                                <strong><b>${object.req_raised_by_id.display_name}</b></strong>.
                                Please grant it for further proceedings.
                            </p>
                        % elif ctx['mail_for'] == 'HOD_applied':
                            <p style="font-size: 17px;">
                                Please find the MIF below raised by
                                <strong><b>${object.req_raised_by_id.display_name}</b></strong>.
                                Please grant it for further proceedings.
                            </p>
                        % endif
                        <table border="0" style="border-collapse: collapse;font-size: 16px;">
                            % if object.code:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;" width="200px">
                                        Reference No
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.code}
                                    </td>
                                </tr>
                            % endif
                            % if object.dept_name:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;" width="200px">
                                        Department
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.dept_name.name}
                                    </td>
                                </tr>
                            % endif
                            % if object.sbu_id:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;"
                                        width="200px">
                                        SBU/Horizontal
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.sbu_id.display_name}
                                    </td>
                                </tr>
                            % endif
                        
                            % if object.project:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;" width="200px">
                                        Project Name
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.project.name}
                                    </td>
                                </tr>
                            % endif
                            % if (object.engagement_period) == 'Specified_period' and (object.months > 0) and (object.year > 0)  :
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Engagement Period Year/Month
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.year} Year  ${object.months} Months
                                    </td>
                                </tr>
                            %elif (object.engagement_period):
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Engagement Period
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.engagement_period} 
                                    </td>
                                </tr>
                            % endif
                            % if object.job_position:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Position
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.job_position.name}
                                    </td>
                                </tr>
                            % endif
                            % if object.qualification:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Qualification
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.qualification}
                                    </td>
                                </tr>
                            % endif
                            % if (object.min_exp_year != False) and (object.max_exp_year != False):
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Experience
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                    % if (object.min_exp_year == '0') and (object.max_exp_year == '0'):
                                        Fresher
                                    % endif
                                    % if (object.min_exp_year != '0') or (object.min_exp_year == '0') and (object.max_exp_year != '0'):
                                        ${object.min_exp_year} - ${object.max_exp_year} Years
                                    % endif
                                    </td>
                                </tr>
                            % endif

                            % if object.no_of_resource:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        No. of Requirements
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        % if object.no_of_resource:
                                            ${object.no_of_resource}
                                        % endif
                                    </td>
                                </tr>
                            % endif
                            % if object.branch_id:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Work Location
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${', '.join(object.branch_id.mapped('name'))}
                                    </td>
                                </tr>
                            % endif
                            % if object.resource:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Hiring Type
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${dict (object.fields_get (allfields = ['resource']) ['resource'] ['selection']) [object.resource]}
                                    </td>
                                </tr>
                            % endif
                            % if object.employee_id:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Replacement For
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        % for rec in object.employee_id:
                                            ${rec.name},
                                        % endfor
                                    </td>
                                </tr>
                            % endif
                            % if object.type_recruitment:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Employment Type
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.type_recruitment}
                                    </td>
                                </tr>
                            % endif
                            % if object.effective_date_of_deployment:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                        Date of Deployment
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.effective_date_of_deployment.strftime('%d-%b-%Y')}
                                    </td>
                                </tr>
                            % endif
                            % if object.it_infra_provision:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                       IT infra provision
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.it_infra_provision}
                                    </td>
                                </tr>
                            % endif
                            % if object.description:
                                <tr>
                                    <td style="padding-left: 20px;height: 40px;">
                                       Remarks
                                    </td>
                                    <td style="color:#167b9e;height: 40px;">
                                        ${object.description}
                                    </td>
                                </tr>
                            % endif
                        </table>
                    </div>
                    &nbsp;
                ]]>
            </field>
			<!-- <field name="user_signature" eval="False"/> -->
		</record>
