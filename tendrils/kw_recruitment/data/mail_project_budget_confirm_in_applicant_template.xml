<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="budget_config_finance_mail_template" model="mail.template">
            <field name="name">Recruitment: Applicant budget amount approval by Finance team</field>
            <field name="email_from">${ctx['email_to']}</field>
            <field name="subject"> Budget Validation for ${object.job_position.title}</field>
            <field name="email_to">${ctx['emails']}</field>
            <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${ctx['dept_name']}</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Please validate the budget estimation for the below profile, who has been selected for <strong>${object.job_position.title}</strong> profile.
                            </p>
                            <br/>

                        
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">Applicant Details:</p>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                    % if object.name:
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td>
                                                ${object.partner_name}
                                        </td>
                                    </tr>
                                    % endif

                                    % if object.partner_mobile:
                                      <tr>
                                          <td><strong>Mobile</strong></td>
                                          <td>
                                                ${object.partner_mobile}
                                          </td>
                                      </tr>
                                    % endif


                                      % if object.mrf_id:
                                        <tr>
                                          <td><strong>MRF</strong></td>
                                          <td>
                                            ${object.mrf_id.code}
                                          </td>
                                        </tr>
                                      % endif

                                    % if object.department_id:
                                      <tr>
                                          <td><strong>Department</strong></td>
                                          <td>
                                                ${object.department_id.name}
                                          </td>
                                      </tr>
                                    % endif
                                      </tr>

                                    <tr>
                                        <td><strong>Designation</strong></td>
                                        <td>
                                            % if object.job_id:
                                              ${object.job_id.name}
                                            % else:
                                                NA
                                            % endif
                                        </td>
                                    </tr>



                                    </tbody>
                                </table>
                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Thanks & regards <br/>
                                Recruitment Team
                            </p>
                            <br/>
                            <p style="color: #676767;font-size: 14px;margin-bottom: 0px;">This is a system generated mail. Please Do not reply to this mail.</p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>

