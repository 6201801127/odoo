<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="applicant_status_to_employee_referred" model="mail.template">
            <field name="name">Recruitment: Update to referer for Recruitment status of applicant</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject"> Application Status | ${object.partner_name}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${object.employee_referred.name}</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Thank you for the reference. 
                                Please find the application status of the referred candidate.
                            </p>
                            <br/>

                            <p style="color: rgb(22, 123, 158);line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><strong>Applicant Details:</strong></p>
                            <br/>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                % if object.name:
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td>
                                            ${object.partner_name}
                                        </td>
                                    </tr>
                                % endif

                                % if object.partner_mobile:
                                  <tr>
                                      <td><strong>Mobile</strong></td>
                                      <td>
                                            ${object.partner_mobile}
                                      </td>
                                  </tr>
                                % endif
                                % if object.email_from:
                                    <tr>
                                        <td><strong>Email</strong></td>
                                        <td>
                                            ${object.email_from}
                                        </td>
                                    </tr>
                                % endif
                                <tr>
                                    <td><strong>Job Position</strong></td>
                                    <td>
                                        % if object.job_position.title:
                                            ${object.job_position.title}
                                        % else:
                                            NA
                                        % endif
                                    </td>
                                </tr>
                                % if object.stage_id:
                                  <tr>
                                      <td><strong>Status</strong></td>
                                      <td>
                                            ${object.stage_id.name}
                                      </td>
                                  </tr>
                                % endif
                                  </tr>

                                </tbody>
                            </table>
                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Please check Recruitment module in Tendrils to get further updates about candidate's application.
                            </p>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    <br/>
                                    This is a system generated mail. Please do not reply to this email. 
                                </p>
                            </div>
                            <br/>
                        </div>
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>


        <record id="applicant_refused_mail_to_employee_referred" model="mail.template">
            <field name="name">Recruitment: Mail to Referer for Application Refused</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject"> Recruitment | Application Rejected | ${object.partner_name}  </field>
            <field name="email_to">${ctx['emails']}</field>
            <field name="model_id" ref="kw_recruitment.model_hr_applicant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${object.employee_referred.name}</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Thank you for taking the time to refer a candidate. It was a pleasure to learn more about the candidate skills and accomplishments. 
                                Unfortunately, our team did not select your referred candidate for further consideration.
                                
                            </p>
                            <br/>

                            <p style="color: rgb(22, 123, 158);line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><strong>Applicant Details:</strong></p>
                            <br/>
                            <br/>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                % if object.name:
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td>
                                            ${object.partner_name}
                                        </td>
                                    </tr>
                                % endif

                                % if object.partner_mobile:
                                  <tr>
                                      <td><strong>Mobile</strong></td>
                                      <td>
                                            ${object.partner_mobile}
                                      </td>
                                  </tr>
                                % endif
                                % if object.email_from:
                                    <tr>
                                        <td><strong>Email</strong></td>
                                        <td>
                                            ${object.email_from}
                                        </td>
                                    </tr>
                                % endif
                                <tr>
                                    <td><strong>Job Position</strong></td>
                                    <td>
                                        % if object.job_position.title:
                                            ${object.job_position.title}
                                        % else:
                                            NA
                                        % endif
                                    </td>
                                </tr>

                                </tbody>
                            </table>
                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                <strong>Thanks & regards <br/>
                                        CSM Technologies Pvt. Ltd.
                                </strong>
                            </p>


                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    % if object.create_uid and object.create_uid.signature:
                                        ${object.create_uid.signature | safe}
                                    % else:
                                        ${object.create_uid.name | safe}
                                    % endif
                            </p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>

        <record id="ijp_job_opening_mail_notification" model="mail.template">
            <field name="name">Recruitment: IJP Mail Notification to CSM Family</field>
            <field name="subject"> IJP | New Job Posted | ${ctx['job_name']}  </field>
            <field name="email_from">tag@csm.tech</field>
            <field name="email_to">csm@csm.tech</field>
            <field name="email_cc">tag@csm.tech</field>
            <field name="model_id" ref="kw_recruitment.model_kw_hr_job_positions"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                <strong>Dear All</strong>,
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Below Job is posted as IJP (Internal Job Posting) in Tendrils Recruitment Module.
                            </p>
                            <p style="color: rgb(22, 123, 158);line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"><strong>Job Details:</strong></p>
                            
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                % if ctx['position']:
                                    <tr>
                                        <td><strong>Position :</strong></td>
                                        <td>
                                            ${ctx['job_name']}
                                        </td>
                                    </tr>
                                % endif

                                % if ctx['experience']:
                                  <tr>
                                      <td><strong>Experience :</strong></td>
                                      <td>
                                            ${ctx['experience']}
                                      </td>
                                  </tr>
                                % endif
                                % if ctx['qualification']:
                                    <tr>
                                        <td><strong>Qualification :</strong></td>
                                        <td>
                                            ${ctx['qualification']}
                                        </td>
                                    </tr>
                                % endif
                                <tr>
                                    <td><strong>Job Location :</strong></td>
                                    <td>
                                        % if ctx['job_location']:
                                            ${ctx['job_location']}
                                        % else:
                                            NA
                                        % endif
                                    </td>
                                </tr>

                                </tbody>
                            </table>
                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                Please log in to Tendrils & browse jobs in
                                <strong>Recruitment > Internal Job Posting > Job Openings</strong>
                                & refer us suitable candidates matching to the requirement.
                            </p>
                            <br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                    Regards,
                                    <br/>
                                    Talent Acquisition Group
                                    <br/>
                                    CSM Technologies Pvt. Ltd.
                            </p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>
       
    </data>
</odoo>