<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        CEO Referral Report-->
        <record id="ceo_referred_employee_tree_view" model="ir.ui.view">
            <field name="name">Referral Employee status Tree</field>
            <field name="model">hr_applicant_ceo_reference_report</field>
            <field name="arch" type="xml">
                <tree string="Applicants" create='false' edit='false' import='false'>
                    <field name="applied_date" string="Applied Date" widget="date"/>
                    <field name="name" string="Name"/>
                    <field name="contact" string="Contact"/>
                    <field name="job_position" string="Job Position"/>
                    <field name="source" string="Source"/>
                    <field name="reference" string='Reference'/>
                    <field name="status" string="Status"/>
                    <field name="emp_code"/>
                    <field name="date_of_joining"/>
                    <field name="last_working_day"/>
                    <field name="create_uid" string="user" invisible='1'/>
                    <field name="applicant_id" invisible='1'/>
                    <button name="action_download_feedback" type="object" string="Download Feedback"
                            class="btn-success"/>
                </tree>
            </field>
        </record>

        <record id="ceo_referred_employee_applicants_action_window" model="ir.actions.act_window">
            <field name="name">CEO Referral Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="ceo_referred_employee_tree_view"/>
            <field name="res_model">hr_applicant_ceo_reference_report</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem parent="kw_recruitment.menu_internal_jobs_posting"
                  id="ceo_referred_report"
                  name="CEO Referral Report"
                  action="ceo_referred_employee_applicants_action_window"
                  groups="hr_recruitment.group_hr_recruitment_manager"
                  sequence="6"/>

    </data>
</odoo>