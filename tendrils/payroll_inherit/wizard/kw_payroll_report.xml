<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_kw_payroll_report_form" model="ir.ui.view">
            <field name="name">kw_payroll_report</field>
            <field name="model">kw_payroll_reports</field>
            <field name="arch" type="xml">
                <form string="Payslips by Employees">
                    <sheet>
                        <group>
                            <field name="year" />
                            <field name="month" />
                        </group>
                        <footer>
                            <button name="get_payroll_report_data" string="View Reports" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel" />
                        </footer>
                    </sheet>
               </form>
            </field>
        </record>

        <record id="action_kw_payroll_report" model="ir.actions.act_window">
            <field name="name">Fisacal Year And Months</field>
            <field name="res_model">kw_payroll_reports</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">new</field>
        </record>

</odoo>