<odoo>
  <data>
    <record model="ir.ui.view" id="attendance_data_view">
      <field name="name">Attendance Data</field>
      <field name="model">attendance_data</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="employee_id"/>
              <field name="year" attrs="{'required':[('month','=',False)]}"/>
              <field name="month" attrs="{'required':[('year','=',False)]}"/>
              <field name="page_no"/>
              <field name="page_size"/>
            </group>
            <footer>
              <button name="get_data" type="object" string="Get Data" class="btn-primary"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="attendance_data_action_window">
      <field name="name">Attendance Data</field>
      <field name="res_model">attendance_data</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!-- <menuitem name="Get Attendance Data From V5" id="attendance_data_menu" parent="hr_payroll.menu_hr_payroll_configuration" sequence="16" action="attendance_data_action_window"/> -->
  </data>
</odoo>