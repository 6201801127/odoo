<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="update_employee_salary_wizard" model="ir.ui.view">
            <field name="name">update_employee_salary form</field>
            <field name="model">update_employee_salary</field>
            <field name="arch" type="xml">
                <form string="Update Salary Info">
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="contract_ids" readonly='1'>
                                <tree>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="job_id"/>
                                    <field name="department_id"/>
                                    <field name="current_basic"/>
                                    <field name="wage"/>
                                    <field name="current_basic"/>
                                    <field name="house_rent_allowance_metro_nonmetro"/>
                                    <field name="conveyance"/>
                                    <field name="productivity"/>
                                    <field name="commitment"/>
                                    <field name="bonus"/>
                                    <field name="is_consolidated"/>
                                    <field name="enable_epf"/>
                                    <field name="pf_deduction"/>
                                    <field name="eps_enable"/>
                                    <field name="enable_gratuity"/>
                                    <field name="esi_applicable"/>
                                    <field name="uan_id"/>
                                    <field name="esi_id"/>
                                    <field name="bank_id"/>
                                    <field name="bank_account"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_emp_salary" string="Update Salary Info to Employee" type="object" class=" btn btn-success" groups='kw_employee.group_payroll_manager'/>
                        <button name="update_nps_to_profile" string="Update NPS to Profile" type="object" class=" btn btn-success" groups='kw_employee.group_payroll_manager'/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_update_salary_wizard" name="Update Salary Info" src_model="hr.contract" res_model="update_employee_salary" view_type="form" view_mode="form" view_id="update_employee_salary_wizard" key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}" />
    </data>
</odoo>