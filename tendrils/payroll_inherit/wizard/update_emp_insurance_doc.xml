<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="upload_employee_insurance_doc" model="ir.ui.view">
            <field name="name">update_emp_insurance_doc.view.form</field>
            <field name="model">update_emp_insurance_doc</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
                        });
                    </script>
                    <div class="d-flex jusitfy-content-center flex-column">
                        <div
                            class="offset-2 col-8 offset-2 mb-4 text-success font-weight-bold h5 text-center">
                            <span class="">Please Upload the Insurance Document for <field
                                    name="employee_id" readonly='1'
                                    options="{'no_open': True,'no_create':True,'no_edit':True}" />.</span>
                        </div>
                        <div class="offset-2 col-8 offset-2 ">
                            <table class="mx-auto">
                                <!-- <tr>
                                    <td>
                                        <label class="o_form_label mb-2 font-weight-bold"
                                            for="enable_insurance">Enable Employee Insurance:</label>
                                            <field name="enable_insurance"  widget="radio"
                                       options="{'horizontal': true}"/>
                                    </td>
                                </tr> -->
                                <tr>
                                    <td>
                                        <label class="o_form_label mb-2 font-weight-bold"
                                            for="insurance_doc">Insurance Document:</label>
                                            <field name="insurance_doc" filename="file_name_insurance"
                                            widget="binary" />
                                        <field name="file_name_insurance" invisible="1" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="o_form_label mb-2 font-weight-bold"
                                            for="validity_date">Validity Date:</label>
                                        <field name="validity_date" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <footer class="d-flex justify-content-center">
                        <button string='Submit' name="update_emp_doc"
                            type="object" class="btn font-weight-bold text-white"
                            style="background-color: #108fbb;" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>