<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="first_last_payslip_wizard" model="ir.ui.view">
        <field name="name">first_last_payslip_wizard</field>
        <field name="model">first_last_payslip</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="excel_file" required='1'/>
                            <br/>
                            <field name="employee_ids" string='Generated Employees' widget="many2many_tags" readonly='1' force_save='1'/>
                            <field name="select_type"  widget="radio"
                            options="{'horizontal': true}"/>
                            <field name="date_from" attrs="{'invisible': [('select_type', '=', '0')],'required': [('select_type', '=', '1')]}"/>
                            <field name="date_to" attrs="{'invisible': [('select_type', '=', '0')],'required': [('select_type', '=', '1')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_button_view_end" string="View Payslips" type="object" class="btn btn-success" style="display: block; margin: 0 auto;"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!-- view_hr_payslip_tree_first_end tree view -->
    <record id="view_hr_payslip_tree_first_end" model="ir.ui.view">
        <field name="name">view_hr_payslip_tree_first_end.view.tree</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree create='0' edit='0' delete='0' default_order='employee_id asc,date_from asc'>
                <field name="number"/>
                <field name="employee_id"/>
                <field name="job_id"/>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
                <field name="company_id"/>
                <button name="%(payslip_report.action_payslip_report_payslips)d" type="action" string="Download Payslip" class="oe_highlight" states='done'/>
            </tree>
        </field>
    </record>

    <record id="first_last_payslip_wizard_action" model="ir.actions.act_window">
        <field name="name">View Payslip</field>
        <field name="res_model">first_last_payslip</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="first_last_payslip_menu" name="First/Last Payslip" parent="payroll_inherit.payroll_report_root_menu_act" action="first_last_payslip_wizard_action" groups="kw_employee.group_payroll_manager" sequence="30"/>

</odoo>