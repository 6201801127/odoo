<odoo>
    <data>
        <record model="ir.ui.view" id="advance_data_view">
            <field name="name">Advance Data</field>
            <field name="model">advance_data</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="get_data" widget="radio" options="{'horizontal': true}"/>
                            <field name="advance_id" options="{'no_edit': True,'no_open':True,'no_create':True}"/>
                            <field name="page_no"/>
                            <field name="page_size"/>
                        </group>
                        <footer>
                            <button name="get_advance_data" type="object" string="Get Advance Data" class="btn-primary" attrs="{'invisible':[('get_data','!=', 'advance_details')]}"/>
                            <button name="get_emi_data" type="object" string="Get EMI Data" class="btn-primary" attrs="{'invisible':[('get_data','=', 'advance_details')]}"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="advance_data_action_window">
            <field name="name">Advance Data</field>
            <field name="res_model">advance_data</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- <menuitem name="Get Advance Data From V5" id="advance_data_menu" parent="hr_payroll.menu_hr_payroll_configuration" sequence="20" action="advance_data_action_window"/> -->
    </data>
</odoo>