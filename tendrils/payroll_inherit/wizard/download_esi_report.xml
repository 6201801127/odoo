<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!--
            Update Wizard
        -->
        <record id="view_form_download_esi_report_wizard" model="ir.ui.view">
            <field name="name">download esi wizard form</field>
            <field name="model">download_esi_report</field>
            <field name="arch" type="xml">
                <form string="Process Payroll">
                     <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <header>
                    </header>
                    <sheet>     
                        <group>
                            <field name="esi_details_ids" />
                        </group>
                        
                    </sheet>
                    <footer>
                        <button name="download_esi_report" string="Download ESI Report"
                                    type="object" class="oe_highlight"
                                    icon="fa-refresh"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_download_esi_report" model="ir.actions.act_window">
            <field name="name">Download esi Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">download_esi_report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_download_esi_report_wizard"/>
            <field name="target">new</field>
        </record>
  

        <act_window id="action_download_esi_report_wizard"
		            name="Download ESI Report"
		            src_model="employee_esi_calc_report"
		            res_model="download_esi_report"
		            view_type="form" view_mode="form" view_id="view_form_download_esi_report_wizard"
		            key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}"
		/>

       
    </data>
</odoo>