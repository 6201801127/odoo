<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="c1_salary_report_filter_view_form" model="ir.ui.view">
            <field name="name">c1_salary_report_filter.view.form</field>
            <field name="model">c1_salary_report_filter</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="year_data" required='1' />
                            <field name="month_data" required='1' />
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="btn_show_c1_report" type="object" class="oe_highlight" string="Show C1 Report" invisible="not context.get('c1_non_verified', False) "/>
                            <button name="btn_show_csmpl_report" type="object" class="oe_highlight" string="Show CSMPL Report" invisible="not context.get('csmpl', False)"/>
                            <button name="btn_show_csmpl_verified_report" type="object" class="oe_highlight" string="Show CSMPL Report" invisible="not context.get('verified', False)"/>
                            <button name="btn_show_c1_verified_report" type="object" class="oe_highlight" string="Show C1 Report" invisible="not context.get('c1', False)"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <!-- hr_first_salary_report action window -->
        <record id="c1_salary_report_filter_action" model="ir.actions.act_window">
            <field name="name">C1 Compiled Salary Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c1_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'c1_non_verified':1}</field>

        </record>

        <menuitem name="Payslip_C1 Report"
            id="c1_salary_report_filter_menu"
            parent="verify_payroll_menu"
            groups="payroll_inherit.payroll_verify_group"
            action="c1_salary_report_filter_action"
            sequence="2"
        />

        <record id="csmpl_salary_report_filter_action" model="ir.actions.act_window">
            <field name="name">CSMPL Compiled Salary Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c1_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'csmpl':1}</field>
        </record>

        <menuitem name="Payslip_CSMPL Report"
            id="csmpl_salary_report_filter_menu"
            parent="verify_payroll_menu"
            groups="payroll_inherit.payroll_verify_group"
            action="csmpl_salary_report_filter_action"
            sequence="3"
        />


        <record id="csmpl_salary_report_verified_action" model="ir.actions.act_window">
            <field name="name">CSMPL Compiled Salary Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c1_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'verified':1}</field>
        </record>

        <menuitem name="Payslip_CSMPL Report"
            id="csmpl_salary_report_verified_menu"
            parent="finance_payroll_menu"
            action="csmpl_salary_report_verified_action"
            sequence="2"
        />

        <record id="c1_salary_report_verified_action" model="ir.actions.act_window">
            <field name="name">C1 Compiled Salary Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c1_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'c1':1}</field>
        </record>

        <menuitem name="Payslip_C1 Report"
            id="c1_salary_report_verified_menu"
            parent="finance_payroll_menu"
            action="c1_salary_report_verified_action"
            sequence="1"
        />
        <record id="bulk_salary_report_filter_view_form" model="ir.ui.view">
            <field name="name">batch_salary_report_filter.view.form</field>
            <field name="model">batch_salary_report_filter</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="year_data" required='1' />
                            <field name="month_data" required='1' />
                            <field name="batch_id" required='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="btn_show_draft_report" type="object" class="oe_highlight" string="Batch Salary Report" invisible="not context.get('batch_verified', False)"/>
                            <button name="btn_show_verified_report" type="object" class="oe_highlight" string="Batch Payslip Report" invisible="context.get('batch_verified', False)"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record id="batch_salary_report_filter_action" model="ir.actions.act_window">
            <field name="name">Batch Salary Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batch_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="context">{'batch_verified':1}</field>
        </record>

        <menuitem name="Batch Salary Report"
            id="batch_salry_report"
            parent="verify_payroll_menu"
            action="batch_salary_report_filter_action"
            sequence="20"
        />
        <record id="batch_salary_verified_report_filter_action" model="ir.actions.act_window">
            <field name="name">Batch Salary Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batch_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Batch Salary Report"
            id="batch_verified_salry_report"
            parent="finance_payroll_menu"
            action="batch_salary_verified_report_filter_action"
            sequence="10"
        />



        <record id="ghi_report_view_form" model="ir.ui.view">
            <field name="name">ghi_report.view.form</field>
            <field name="model">ghi_report</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="fiscalyr" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                            <field name="from_date" required='1'/>
                            <field name="to_date" required='1'/>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="btn_show_ghi_report" type="object" class="oe_highlight" string="Show GHI Report" />
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ghi_report_insurance_personal_form" model="ir.ui.view">
            <field name="name">ghi_report.view.form</field>
            <field name="model">ghi_report</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="from_date" required='1'/>
                            <field name="to_date" required='1'/>  
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="btn_show_employee_details" type="object" class="oe_highlight" string="View" />
                        </center>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ghi_report_action" model="ir.actions.act_window">
            <field name="name">GHI Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ghi_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="ghi_report_view_form"/>
            <field name="target">new</field>
        </record>

        <record id="ghi_personal_insurance_action" model="ir.actions.act_window">
            <field name="name">Personal/International Insurance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ghi_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="ghi_report_insurance_personal_form"/>
            <field name="target">new</field>
        </record>

        <!-- personal_international_insurance tree view -->
        <record id="personal_international_insurance_view_tree" model="ir.ui.view">
            <field name="name">personal_international_insurance.view.tree</field>
            <field name="model">personal_international_insurance</field>
            <field name="arch" type="xml">
                <tree delete='0' create='0' edit='0'>
                    <!-- Add your fields here -->
                    <field name="emp_code"/>
                    <field name="name"/>
                    <!-- <field name="employement_type"/> -->
                    <field name="base_branch_id" string="Location"/>
                    <field name="department_id"/>
                    <field name="personal_insurance"/>
                    <field name="insurance_validate_date"/>
                    <button name="action_update_insurance" type="object" string="Update" class="btn-primary"/>
                </tree>
            </field>
        </record>



        <menuitem id="GHI_report_employee_menu"
        name="GHI Report"
        sequence="251"
        action="ghi_report_action"
        parent="payroll_inherit.health_insurance_employee"/>

        <menuitem id="personal_international_employee_menu"
        name="Personal/International Insurance"
        sequence="249"
        action="ghi_personal_insurance_action"
        parent="payroll_inherit.health_insurance_employee"/>

        <!-- update_employee_details form view -->
        <record id="update_employee_details_view_form" model="ir.ui.view">
            <field name="name">update_employee_details.view.form</field>
            <field name="model">update_employee_details</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="employee_id" invisible='1' force_save='1'/>
                            <field name="personal_insurance" string='Personal Insurance Available' widget="radio" options="{'horizontal': true}"/>
                            <!-- attrs="{'invisible':[('personal_insurance','=','No')]}" -->
                            <field name="insurance_validate_date" force_save='1' attrs="{'invisible':[('personal_insurance','=','No')],'required':[('personal_insurance','=','Yes')]}"/>
                            <field name="insurance_doc" filename="file_name_insurance" widget="binary" attrs="{'invisible':[('personal_insurance','=','No')],'required':[('personal_insurance','=','Yes')]}"/>
                            <field name="file_name_insurance" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="update_employee_detail" type="object" class="btn-success" string="Update" />
                        </center>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>