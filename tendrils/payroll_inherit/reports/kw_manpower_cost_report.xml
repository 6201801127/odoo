<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name tree view -->
        <record id="kw_manpower_cost_report_view_tree" model="ir.ui.view">
            <field name="name">Manpower Cost Report Tree View</field>
            <field name="model">kw_manpower_cost_report_view</field>
            <field name="arch" type="xml">
                <tree delete='0' create='0' edit='0' default_order='date_to asc'>
                    <field name="date_to" string='Date'/>
                    <!-- <field name="month_of"/> -->
                    <field name="department_id"/>
                    <!-- <field name="salary_month" invisible="1"/> -->
                    <field name="old_emp" class="text-right  font-weight-bold" sum='Total'/>
                    <field name="old_emp_ctc" class="text-right  font-weight-bold" sum='Total'/>
                    <field name="old_ex_emp" class="text-right  font-weight-bold old_ex_emp" sum='Total'/>
                    <field name="old_ex_emp_ctc" class="text-right  font-weight-bold old_ex_emp" sum='Total'/>
                    <field name="new_emp"  class="text-right  font-weight-bold new_joiner" sum='Total'/>
                    <field name="new_emp_ctc"  class="text-right  font-weight-bold new_joiner" sum='Total'/>
                    <field name="new_ex_emp"  class="text-right  font-weight-bold ex_emp" sum='Total'/>
                    <field name="new_ex_emp_ctc"  class="text-right  font-weight-bold ex_emp" sum='Total'/>
                    <field name="total_emp" class="text-right  font-weight-bold" sum='Total'/>
                    <field name="total_ctc" class="text-right  font-weight-bold" sum='Total'/>
                </tree>
            </field>
        </record>
        <record id="kw_manpower_cost_report_search" model="ir.ui.view">
            <field name="name">Manpower Cost Report Search</field>
            <field name="model">kw_manpower_cost_report_view</field>
            <field name="arch" type="xml">
                <search string="Manpower Cost Report">
                    <field name="date_to" string="Date"/>
                    <field name="department_id" string="Department"/>
                    <group expand="0" string="Group By">
                        <filter name="date_to_report" string="Date" domain="" context="{'group_by':'date_to'}"/>
                        <!-- <filter name="report_month" string="Month" domain="[]" context="{'group_by':'month_of'}"/> -->
                        <filter name="report_dept" string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="kw_manpower_cost_wizard_view_form" model="ir.ui.view">
            <field name="name">kw_manpower_cost_wizard.view.form</field>
            <field name="model">kw_manpower_cost_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <script>
	        			$(document).ready(function(){
	                        $(".modal-dialog").addClass('modal-md').removeClass('modal-lg');
	                    });
	        		</script>
                    <div class="d-flex jusitfy-content-center flex-column">
                        <div class="offset-2 col-8 offset-2 ">
                            <table class="mx-auto">
                                <tr>
                                    <td><label class="o_form_label mb-2 font-weight-bold" for="date_range">Fiscal Year</label></td>
                                    <td><field name="date_range" options="{'no_open': True,'no_create':True,'no_edit':True}"/></td>
                                </tr>
                                <tr>
                                    <td><label class="o_form_label mb-2 font-weight-bold" for="company_id">Company</label></td>
                                    <td><field name="company_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <footer class="d-flex justify-content-center">
                        <button string='Submit' name="button_submit" 
                        type="object" class="btn font-weight-bold text-white" 
                        style="background-color: #108fbb;" />
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="kw_manpower_cost_wizard_action" model="ir.actions.act_window">
            <field name="name">Manpower Cost Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_manpower_cost_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Manpower Cost Report" id="kw_manpower_cost_report_menu"
                  parent="payroll_inherit.finance_payroll_menu"
                  groups="payroll_inherit.payroll_finance_group"
                  action="kw_manpower_cost_wizard_action" />

    </data>
</odoo>
