<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Tree view -->
		<record id="salary_other_advance_report__view_tree" model="ir.ui.view">
			<field name="name">salary_other_advance_report__view_report</field>
			<field name="model">payroll_other_advance_report</field>
			<field name="arch" type="xml">
				<tree string="Salary advance Report Tree view" create="false" import="false">
					<!-- <field name="year"/> -->
					<!-- <field name="month"/> -->
					<field name="emp_code"/>
					<field name="name" />
					<field name="employee_id" invisible='1'/>
					<field name="other_adv" class="font-weight-bold" sum='Total'/>
					<field name="purpose"/>
				</tree>
			</field>
		</record>

		<record id="view_payroll_other_advance_calculation_report_search" model="ir.ui.view">
			<field name="name">payroll other advance report</field>
			<field name="model">payroll_other_advance_report</field>
			<field name="arch" type="xml">
				<search string="payroll_salary_advance_report_search">
					<field name="employee_id"/>
					<field name="year"/>
					<field name="month"/>
					<filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year_salary_other_advance"/>
					<filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_salary_other_advance"/>
					<separator/>
					<filter string="This Month" domain="[('date_to', 'like',context_today().strftime('%Y-%m'))]" name="this_month_salary_other_advance"/>
					<filter string="Last Month" domain="[('date_to','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('date_to','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_salary_other_advance"/>
					<separator/>

					<filter string="January" domain="[('month','=',1)]" name="january_salary_other_advance"/>
					<filter string="February" domain="[('month','=',2)]" name="february_salary_other_advance"/>
					<filter string="March" domain="[('month','=',3)]" name="march_salary_other_advance"/>
					<filter string="April" domain="[('month','=',4)]" name="april_salary_other_advance"/>
					<filter string="May" domain="[('month','=',5)]" name="may_salary_other_advance"/>
					<filter string="June" domain="[('month','=',6)]" name="june_salary_other_advance"/>
					<filter string="July" domain="[('month','=',7)]" name="july_salary_other_advance"/>
					<filter string="August" domain="[('month','=',8)]" name="august_salary_other_advance"/>
					<filter string="September" domain="[('month','=',9)]" name="september_salary_other_advance"/>
					<filter string="October" domain="[('month','=',10)]" name="october_salary_other_advance"/>
					<filter string="November" domain="[('month','=',11)]" name="november_salary_other_advance"/>
					<filter string="December" domain="[('month','=',12)]" name="december_salary_other_advance"/>
					<separator/>

				</search>
			</field>
		</record>



		<!-- action window -->
		<record id="other_advance_action_data" model="ir.actions.act_window">
			<field name="name">Other Advance Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">payroll_other_advance_report</field>
			<field name="view_mode">tree</field>
			<field name="context">{'search_default_current_year_salary_other_advance':1,'search_default_this_month_salary_other_advance':1,'create':0,'edit':0,'delete':0,'import':0}</field>
			<field name="view_type">form</field>
			<!-- <field name='search_view_id' ref='view_payroll_other_advance_calculation_report_search'/> -->
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>

		<!-- other_advance_report_wizard form view -->
		<record id="other_advance_report_download_view_form" model="ir.ui.view">
			<field name="name">other_advance_report_download.view.form</field>
			<field name="model">other_advance_report_download</field>
			<field name="arch" type="xml">
				<form string="">
					<sheet>
						<group>
							<field name="other_adv_ids"/>
						</group>
					</sheet>
					<footer>
						<center>
							<button name="%(payroll_inherit.other_advance_report)d" type="action" string="Download Report" class="oe_highlight" />
						</center>
					</footer>
				</form>
			</field>
		</record>
 		<menuitem id="payroll_other_ded_finance_menu" name="Other Advance" 
        parent="finance_payroll_menu" 
        groups="payroll_inherit.payroll_finance_group" 
        action="lunch_expenses_finance_window" sequence="4"/>
		<!-- <menuitem id="other_advance_report_menu" name="Other Advance Report" parent="payroll_inherit.finance_payroll_menu" action="other_advance_action_data" sequence="5"/> -->

		<act_window id="other_advance_report_act" name="Other Advance" src_model="payroll_other_advance_report" res_model="other_advance_report_download" view_type="form" view_mode="form" view_id="other_advance_report_download_view_form" key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}"/>

	</data>
</odoo>
