<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Tree view -->
		<record id="employee_esi_calc_report_report__view_tree" model="ir.ui.view">
			<field name="name">employee_esi_calc_report.tree</field>
			<field name="model">employee_esi_calc_report</field>
			<field name="arch" type="xml">
				<tree string="ESI Bulk Report" create="false" import="false" delete="false" default_order='employee_id asc'>
					<field name="year"/>
					<field name="month"/>
					<field name="department_id"/>
					<field name="job_id"/>
					<field name="emp_code"/>
					<field name="employee_id" invisible='1'/>
					<field name="name" class="font-weight-bold"/>
					<field name="basic" sum="Total"/>
					<field name="ip_contribution" sum="Total"/>
					<!-- <field name="empr_contribution"/>
					<field name="total"/> -->
				</tree>
			</field>
		</record>


		<record id="view_payroll_esi_calculation_report_search" model="ir.ui.view">
			<field name="name">payroll esi calculation_report_search</field>
			<field name="model">employee_esi_calc_report</field>
			<field name="arch" type="xml">
				<search string="payroll_esi_calculation_report_search">
					<field name="year"/>
					<field name="month"/>
					<!-- <field name="employee_id"/> -->

					<filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year_esi"/>
					<filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_esi"/>
					<separator/>
					<filter string="This Month" domain="[('date_to', 'like',context_today().strftime('%Y-%m'))]" name="this_month_esi"/>
					<filter string="Last Month" domain="[('date_to','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('date_to','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_salary"/>
					<separator/>
					<filter string="January" domain="[('month','=',1)]" name="january_esi"/>
					<filter string="February" domain="[('month','=',2)]" name="february_esi"/>
					<filter string="March" domain="[('month','=',3)]" name="march_esi"/>
					<filter string="April" domain="[('month','=',4)]" name="april_esi"/>
					<filter string="May" domain="[('month','=',5)]" name="may_esi"/>
					<filter string="June" domain="[('month','=',6)]" name="june_esi"/>
					<filter string="July" domain="[('month','=',7)]" name="july_esi"/>
					<filter string="August" domain="[('month','=',8)]" name="august_esi"/>
					<filter string="September" domain="[('month','=',9)]" name="september_esi"/>
					<filter string="October" domain="[('month','=',10)]" name="october_esi"/>
					<filter string="November" domain="[('month','=',11)]" name="november_esi"/>
					<filter string="December" domain="[('month','=',12)]" name="december_esi"/>
					<separator/>
				</search>
			</field>
		</record>


		<!-- action window -->
		<record id="employee_esi_calc_report_action" model="ir.actions.act_window">
			<field name="name">ESIC Deduction Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">employee_esi_calc_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="target">current</field>
			<field name="context">{'search_default_current_year_esi':1,'search_default_this_month_esi':1,}</field>
			<field name="search_view_id" ref="view_payroll_esi_calculation_report_search" />
		</record>

		<menuitem name="ESIC Deduction Report" id="employee_esi_calc_report_menu" parent="payroll_inherit.statutory_root_menu_act" action="employee_esi_calc_report_action" sequence="1"/>
	</data>
</odoo>
