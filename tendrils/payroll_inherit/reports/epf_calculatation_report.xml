<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="payroll_epf_calculation_report_report__view_tree" model="ir.ui.view">
            <field name="name">payroll_epf_calculation_report.tree</field>
            <field name="model">payroll_epf_calculation_report</field>
            <field name="arch" type="xml">
                <tree string="ESI Report" create="false" import="false" delete="false">
                    <field name="year"/>
                    <field name="month"/>
                    <field name="emp_code"/>
                    <field name="uan"/>
                    <field name="pf_1800_slab"/>
                    <field name="eps_enable"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="name" class="font-weight-bold"/>
                    <field name="date_to" invisible="1"/>
                    <field name="gross_wages" string="Gross Wages" sum="Total"/>
                    <field name="epf_wages" string="EPF Wages" sum="Total"/>
                    <field name="eps_wages" string="EPS Wages" sum="Total"/>
                    <field name="edli_wages" string="EDLI Wages" sum="Total"/>
                    <field name="eepf" invisible='1'/>
                    <field name="edli_charges" string="EDLI Charges" sum="Total"/>
                    <field name="employee_pf" sum="Total"/>
                    <field name="pension_fund" sum="Total"/>
                    <field name="employer_pf" sum="Total"/>
                </tree>
            </field>
        </record>


        <record id="view_payroll_epf_calculation_report_search" model="ir.ui.view">
            <field name="name">payroll epf calculation_report_search</field>
            <field name="model">payroll_epf_calculation_report</field>
            <field name="arch" type="xml">
                <search string="payroll_epf_calculation_report_search">
                    <field name="year"/>
                    <field name="month"/>
                    <field name="date_to"/>
                    <field name="employee_id"/>
                    <filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year_salary"/>
                    <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_salary"/>
                    <separator/>
                    <filter string="This Month" domain="[('date_to', 'like',context_today().strftime('%Y-%m'))]" name="this_month_salary"/>
                    <filter string="Last Month" domain="[('date_to','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('date_to','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_salary"/>
                    <separator/>
                    <filter string="January" domain="[('month','=',1)]" name="january_deduction"/>
                    <filter string="February" domain="[('month','=',2)]" name="february_deduction"/>
                    <filter string="March" domain="[('month','=',3)]" name="march_deduction"/>
                    <filter string="April" domain="[('month','=',4)]" name="april_deduction"/>
                    <filter string="May" domain="[('month','=',5)]" name="may_deduction"/>
                    <filter string="June" domain="[('month','=',6)]" name="june_deduction"/>
                    <filter string="July" domain="[('month','=',7)]" name="july_deduction"/>
                    <filter string="August" domain="[('month','=',8)]" name="august_deduction"/>
                    <filter string="September" domain="[('month','=',9)]" name="september_deduction"/>
                    <filter string="October" domain="[('month','=',10)]" name="october_deduction"/>
                    <filter string="November" domain="[('month','=',11)]" name="november_deduction"/>
                    <filter string="December" domain="[('month','=',12)]" name="december_deduction"/>
                </search>
            </field>
        </record>




        <!-- action window -->
        <record id="payroll_epf_calculation_report_action" model="ir.actions.act_window">
            <field name="name">EPF Calculation Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payroll_epf_calculation_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_current_year_salary':1,'search_default_this_month_salary':1,}</field>
            <field name="search_view_id" ref="view_payroll_epf_calculation_report_search" />
        </record>

    </data>
</odoo>
