<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Tree view -->
		<record id="payroll_salary_advance_report_tree" model="ir.ui.view">
            <field name="name">salary_advance_report__view_report</field>
            <field name="model">payroll_salary_advance_report</field>
            <field name="arch" type="xml">
                <tree string="Salary advance Report Tree view" create="false" import="false">
                    <field name="emp_code"/>
					<field name="name" />
					<field name="employee_id" invisible='1'/>
					<field name="principal_amount" class="font-weight-bold" sum='Total'/>
					<field name="interest" class="font-weight-bold" sum='Total'/>
					<field name="total_amount" class="font-weight-bold" sum='Total'/>
					<field name="purpose"/>
                </tree>
            </field>
        </record>

		<record id="view_payroll_salary_advance_calculation_report_search" model="ir.ui.view">
            <field name="name">payroll salary advance report</field>
            <field name="model">payroll_salary_advance_report</field>
            <field name="arch" type="xml">
                <search string="payroll_salary_advance_report_search">
					<field name="employee_id"/>
					<field name="year"/>
					<field name="month"/>

					 <filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year_salary_advance"/>
					 <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_salary_advance"/>
					 <separator/>
                     <filter string="This Month" domain="[('date_to', 'like',context_today().strftime('%Y-%m'))]" name="this_month_salary_advance"/>
                     <filter string="Last Month" domain="[('date_to','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('date_to','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_salary_advance"/>
					<separator/>

                    <filter string="January" domain="[('month','=',1)]" name="january_salary_advance"/>
					<filter string="February" domain="[('month','=',2)]" name="february_salary_advance"/>
					<filter string="March" domain="[('month','=',3)]" name="march_salary_advance"/>
					<filter string="April" domain="[('month','=',4)]" name="april_salary_advance"/>
					<filter string="May" domain="[('month','=',5)]" name="may_salary_advance"/>
					<filter string="June" domain="[('month','=',6)]" name="june_salary_advance"/>
					<filter string="July" domain="[('month','=',7)]" name="july_salary_advance"/>
					<filter string="August" domain="[('month','=',8)]" name="august_salary_advance"/>
					<filter string="September" domain="[('month','=',9)]" name="september_salary_advance"/>
					<filter string="October" domain="[('month','=',10)]" name="october_salary_advance"/>
					<filter string="November" domain="[('month','=',11)]" name="november_salary_advance"/>
					<filter string="December" domain="[('month','=',12)]" name="december_salary_advance"/>
                    <separator/>
					
                </search>
            </field>
        </record>
		<record id="payroll_salary_advance_report_form" model="ir.ui.view">
			<field name="name">payroll salary advance report form</field>
			<field name="model">salary_advance_report_download</field>
			<field name="arch" type="xml">
				<form string="">
					<sheet>
						<group>
							<field name="salary_adv_ids"/>
						</group>
					</sheet>
					<footer>
						<center>
							<button name="%(payroll_inherit.salary_advance_report)d" type="action" string="Download Report" class="oe_highlight" />
						</center>
					</footer>
				</form>
			</field>
		</record>

		<!-- action window -->
		<record id="payroll_salary_advance_action" model="ir.actions.act_window">
			<field name="name">Salary Advance Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">payroll_salary_advance_report</field>
			<field name="view_mode">tree</field>
            <field name="context">{'search_default_current_year_salary_advance':1,'search_default_this_month_salary_advance':1}</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
		<record id="payroll_salary_advance_verified_report_tree" model="ir.ui.view">
            <field name="name">payroll_salary_advance_verified_report.tree</field>
            <field name="model">payroll_salary_advance_verified_report</field>
            <field name="arch" type="xml">
                <tree string="Salary advance Report Tree view" create="false" import="false">
                    <field name="emp_code"/>
					<field name="name" />
					<field name="employee_id" invisible='1'/>
					<field name="principal_amount" class="font-weight-bold" sum='Total'/>
					<field name="interest" class="font-weight-bold" sum='Total'/>
					<field name="total_amount" class="font-weight-bold" sum='Total'/>
					<field name="purpose"/>
                </tree>
            </field>
        </record>

		<record id="payroll_salary_advance_verified_report_search" model="ir.ui.view">
            <field name="name">payroll salary advance report</field>
            <field name="model">payroll_salary_advance_verified_report</field>
            <field name="arch" type="xml">
                <search>
					<field name="employee_id"/>
					<field name="year"/>
					<field name="month"/>

					 <filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year_salary_advance"/>
					 <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_salary_advance"/>
					 <separator/>
                     <filter string="This Month" domain="[('date_to', 'like',context_today().strftime('%Y-%m'))]" name="this_month_salary_advance"/>
                     <filter string="Last Month" domain="[('date_to','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('date_to','&lt;',(context_today()).strftime('%Y-%m-01'))]" name="last_month_salary_advance"/>
					<separator/>

                    <filter string="January" domain="[('month','=',1)]" name="january_salary_advance"/>
					<filter string="February" domain="[('month','=',2)]" name="february_salary_advance"/>
					<filter string="March" domain="[('month','=',3)]" name="march_salary_advance"/>
					<filter string="April" domain="[('month','=',4)]" name="april_salary_advance"/>
					<filter string="May" domain="[('month','=',5)]" name="may_salary_advance"/>
					<filter string="June" domain="[('month','=',6)]" name="june_salary_advance"/>
					<filter string="July" domain="[('month','=',7)]" name="july_salary_advance"/>
					<filter string="August" domain="[('month','=',8)]" name="august_salary_advance"/>
					<filter string="September" domain="[('month','=',9)]" name="september_salary_advance"/>
					<filter string="October" domain="[('month','=',10)]" name="october_salary_advance"/>
					<filter string="November" domain="[('month','=',11)]" name="november_salary_advance"/>
					<filter string="December" domain="[('month','=',12)]" name="december_salary_advance"/>
                    <separator/>
                </search>
            </field>
        </record>
		<record id="payroll_salary_advance_verified_report_action" model="ir.actions.act_window">
			<field name="name">Salary Advance Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">payroll_salary_advance_verified_report</field>
			<field name="view_mode">tree</field>
            <field name="context">{'search_default_current_year_salary_advance':1,'search_default_this_month_salary_advance':1}</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
		<act_window id="salary_advance_report_act" name="Salary Advance" src_model="payroll_salary_advance_report" res_model="salary_advance_report_download" view_type="form" view_mode="form" view_id="payroll_salary_advance_report_form" key2="client_action_multi" target="new" context="{'selected_active_ids':active_ids}"/>
		<menuitem id="salary_advance_report_menu" name="Salary Advance Report" parent="payroll_inherit.finance_payroll_menu" action="payroll_salary_advance_action" sequence="3"/>
		<menuitem id="salary_advance_verified_menu" name="Salary Advance Report" parent="payroll_inherit.verify_payroll_menu" action="payroll_salary_advance_verified_report_action" groups="payroll_inherit.payroll_verify_group" sequence="4"/>

	</data>
</odoo>
