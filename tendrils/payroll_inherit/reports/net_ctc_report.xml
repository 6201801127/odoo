<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- hr_payroll_salary_report tree view -->
        <record id="net_ctc_report_view_tree" model="ir.ui.view">
            <field name="name">net_ctc_report.view.tree</field>
            <field name="model">net_ctc_report</field>
            <field name="arch" type="xml">
                <tree create='0' delete='0' import='0'>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="employement_type"/>
                    <field name="emp_count" sum="emp_count"/>
                    <field name="net" sum="net" class="font-weight-bold"/>
                    <field name="ctc" sum="ctc" class="font-weight-bold"/>
                    <field name="month_int" invisible='1'/>
                </tree>
            </field>
        </record>
        <!-- net_ctc_report pivot view -->
