<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- hr_payroll_salary_report tree view -->
        <record id="hr_payroll_allowance_report" model="ir.ui.view">
            <field name="name">hr_payroll_deduction_report.view.tree</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <tree create='0'>
                    
                    <field name="sal_year" string='Year' groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="salary_confirmation_month" invisible='1'/>
                    <field name="salary_confirm_year" invisible='1'/>
                    <field name="salary_month_string" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="job_id" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="department" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="emp_code" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="employee" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager' class="font-weight-bold"/>
                    <field name="city_allowances" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="incentive_allowances" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="leave_encachment" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="er_bonus" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="variable" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="equitable_allowance" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="traning_incentive" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="spl_allowance" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="arrear" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager'/>
                    <field name="total_allowance" sum="Total" groups='kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager' class="font-weight-bold"/>

                </tree>
            </field>
        </record>

        <record id="hr_payroll_allowance_report_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Allowance Report</field>
            <field name="res_model">hr.payslip</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state','=','done')]</field>
            <field name="context">{'search_default_current_year_salary':1,'search_default_current_month_salary':1,'delete':0,'edit':0,'import':0,'search_default_company_id':1}</field>
            <field name="search_view_id" ref="payroll_inherit.hr_payslip_report_search_view"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_payroll_allowance_report')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Records to show...
                </p>
            </field>
        </record>
        <!-- hr.payslip search view -->
        <menuitem name="Employee Allowance Report"
                  id="employee_allowance_menu"
                  parent="payroll_inherit.payroll_report_root_menu_act" 
                  action="hr_payroll_allowance_report_action"
                  sequence="5" />

    </data>
</odoo>