<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- hr_payroll_salary_report tree view -->
        <record id="compiled_salary_report_view_tree" model="ir.ui.view">
            <field name="name">payroll_salary_compiled_report.view.tree</field>
            <field name="model">payroll_salary_compiled_report</field>
            <field name="arch" type="xml">
                <tree create='0' delete='0' import='0' decoration-bf="rule_sequence in (20,499,700)">
                    <field name="year_data" invisible='1'/>
					<field name="month_data" invisible='1'/>
                    <field name="salary_rule_type" class="font-weight-bold"/>
                    <field name="salary_rule" />
                    <field name="treasury_budget"/>
                    <field name="project_amount"/>
                    <field name="total"/>
                    <field name="rule_sequence" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="payroll_salary_compiled_report_search" model="ir.ui.view">
            <field name="name">payroll_salary_compiled_report.view.search</field>
            <field name="model">payroll_salary_compiled_report</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="year_data"/>
                    <field name="month_data"/>
                    <filter string="This Year" domain="[('year_data', '=',context_today().strftime('%Y'))]" name="current_year_salary"/>
                    <filter string="Last Year" domain="[('year_data', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_yearsalary"/>
                    <separator/>
                    <filter string="This Month" name="current_month_salary" domain="[('month_data', '=',context_today().strftime('%m'))]"/> 
					<separator/>
                    <filter string="January" domain="[('month_data','=','1')]" name="january_salary"/>
                    <filter string="February" domain="[('month_data','=','2')]" name="february_salary"/>
                    <filter string="March" domain="[('month_data','=','3')]" name="march_salary"/>
                    <filter string="April" domain="[('month_data','=','4')]" name="april_salary"/>
                    <filter string="May" domain="[('month_data','=','5')]" name="may_salary"/>
                    <filter string="June" domain="[('month_data','=','6')]" name="june_salary"/>
                    <filter string="July" domain="[('month_data','=','7')]" name="july_salary"/>
                    <filter string="August" domain="[('month_data','=','8')]" name="august_salary"/>
                    <filter string="September" domain="[('month_data','=','9')]" name="september_salary"/>
                    <filter string="October" domain="[('month_data','=','10')]" name="october_salary"/>
                    <filter string="November" domain="[('month_data','=','11')]" name="november_salary"/>
                    <filter string="December" domain="[('month_data','=','12')]" name="december_salary"/>
                    <separator/>
                </search>
            </field>
        </record>
         <record id="c1_salary_verified_report_tree" model="ir.ui.view">
            <field name="name">c1_salary_verified_report.view.tree</field>
            <field name="model">c1_salary_verified_report</field>
