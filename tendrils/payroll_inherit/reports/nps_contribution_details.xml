<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <record id="nps_contribution_report_view_tree" model="ir.ui.view">
            <field name="name">nps_contribution_report_view_tree</field>
            <field name="model">nps_contribution_details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_code"/>
                    <field name="cho_reg_no" string='CHO Reg No'/>
                    <field name="cbo_reg_no" string='CBO Reg No'/>
                    <field name="pran_no"/>
                    <field name="employee_name" string='Subscribers Name'/>
					<field name="date_of_birth"/>
					<field name="tier_flag"/>
                    <field name="employers_contribution"/>
					<field name="employee_contribution"/>
                    <field name="gross_contribution" sum='total'/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="cont_type"/>
					<field name="remark"/>
					<button string="Change Cont. type" type="object" class="oe_highlight" name="action_change_cont_type"/>
                </tree>
            </field>
        </record>



		<record id="nps_contribution_report_search_view" model="ir.ui.view">
            <field name="name">nps_contribution_report_search_view</field>
            <field name="model">nps_contribution_details</field>
            <field name="arch" type="xml">
                <search>
					<field name="employee_id"/>
					<separator/>
                    <filter string="January" domain="[('month','=',1)]" name="january_nps"/>
					<filter string="February" domain="[('month','=',2)]" name="february_nps"/>
					<filter string="March" domain="[('month','=',3)]" name="march_nps"/>
					<filter string="April" domain="[('month','=',4)]" name="april_nps"/>
					<filter string="May" domain="[('month','=',5)]" name="may_nps"/>
					<filter string="June" domain="[('month','=',6)]" name="june_nps"/>
					<filter string="July" domain="[('month','=',7)]" name="july_nps"/>
					<filter string="August" domain="[('month','=',8)]" name="august_nps"/>
					<filter string="September" domain="[('month','=',9)]" name="september_nps"/>
					<filter string="October" domain="[('month','=',10)]" name="october_nps"/>
					<filter string="November" domain="[('month','=',11)]" name="november_nps"/>
					<filter string="December" domain="[('month','=',12)]" name="december_nps"/>
					<filter string="Current Month" domain="[('month', '=', (context_today().month))]" name="current_month_nps"/>
                    <separator/>
                </search>
            </field>
        </record>
      
		
        <record id="nps_contribution_report_action" model="ir.actions.act_window">
			<field name="name">Contribution Details Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">nps_contribution_details</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
            <field name="search_view_id" ref="nps_contribution_report_search_view"/>
			<field name="context">{'create':False,'edit':False,'delete':False,'import':False,'duplicate':False, 'search_default_current_month_nps': 1}</field>
		</record> 



		<menuitem name="Contribution Details" id="nps_contribution_report_menu" parent="payroll_inherit.nps_report_main_menu" action="nps_contribution_report_action" sequence="5"/>
	</data>





	<data>
		<record id="combined_nps_cont_model_form" model="ir.ui.view">
            <field name="name">combined_nps_cont_model_form</field>
            <field name="model">combined_nps_cont_model</field>
            <field name="arch" type="xml">
                <form>
					<sheet>
						<group>
							<group>
								<field name="payslip_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
								<field name="cont_type"/>
								<field name="remark"/>
							</group>
							<group>
							</group>
						</group>
						<footer>
                            <center>
                                <button name="check_combined_nps_cont" type="object" string="Save" class="oe_highlight"/>
                            </center>
                        </footer>
					</sheet>
                </form>
            </field>
        </record>
	</data>
</odoo>