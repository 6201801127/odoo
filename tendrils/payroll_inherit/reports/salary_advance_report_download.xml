<odoo>
    <template id="payroll_salary_advance_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <style>
						.main_div{margin-top:0;width:85%;margin-left:90px}
						.second_div{font-size:13.5px}
						.table1{width:100%;}
						.row1{width:100%;}
						.company{background-color: #e6e6e6;border: 1px solid gray;vertical-align:middle;height:50px;padding: 2px 5px 0px 157px;   font-family:Verdana, Geneva, sans-serif;border-bottom:0px none;}
						.table2{width:100%;border: 1px solid gray;border-collapse: collapse;border-top:0px none;margin-top:10px;}
                        .column1{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px}
                        .header1{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px}
                        .column2{border: 1px solid gray;border-collapse: collapse;text-align:right;padding: 2px 5px 0px 5px}
                        .column6{border: 1px solid gray;border-collapse: collapse;text-align:center;padding: 2px 5px 0px 5px}
                        .table3{width:100%;}
                        .column4{border: 1px solid gray;border-collapse: collapse;text-align:center;border-top:0px none;padding: 2px 5px 0px 5px}
                        .column5{border: 1px solid gray;border-collapse: collapse;text-align:right;border-top:0px none;padding: 2px 5px 0px 5px}
                        .report{ background-color: #e6e6e6;border: 1px solid gray;vertical-align:middle;height:50px;padding: 2px 5px 0px 157px;font-family:Verdana, Geneva, sans-serif;border-top:0px none;}
                    </style>
                    <div class='main_div'>
                        <div class='second_div'>
                            <div class="col-xs-12 mt-0 pt-0">
                                <table class='table1' cellspacing='0' cellpadding='5'>
                                    <tr class='row1'>
                                        <td class='company'>
                                            <h4>
                                                <b>
                                                    <span>CSM Technologies Private Limited</span>
                                                </b>
                                            </h4>
                                        </td>
                                    </tr>
                                    <tr class='report'>
                                        <td>
                                            <h4>
                                                <center>
                                                    <span>Salary Advance Report</span>
                                                </center>
                                            </h4>
                                        </td>
                                    </tr>
                                </table>
                                <table class='table2' cellspacing='0' cellpadding='5'>
                                    <tr>
                                        <th class='header1'> SL # </th>
                                        <th class="header1">
                                            Year
                                        </th>
                                        <th class="header1">
                                            Month
                                        </th>
                                        <th class="header1">Code</th>
                                        <th class="header1">Name</th>
                                        <th class="header1">EMI Amount</th>
                                        <th class="header1">Interest Amount</th>
                                    </tr>
                                    <t t-set='count' t-value="1"/>
                                    <t t-foreach="o.salary_adv_ids" t-as="adv_id">
                                        <tr>
                                            <td class="column6">
                                                <t t-esc="count"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="adv_id['year']"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="o.compute_month()"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="adv_id['emp_code']"/>
                                            </td>
                                            <td class="column1">
                                                <span t-esc="adv_id['name']"/>
                                            </td>
                                            <td class="column2">
                                                <span t-esc="adv_id['principal_amount']"/>
                                            </td>
                                            <td class="column2">
                                                <span t-esc="adv_id['interest']"/>
                                            </td>
                                        </tr>
                                        <t t-set="count" t-value="count+1"/>
                                    </t>
                                    <tr>
                                        <td class="column4" colspan="5">
                                            <b>
                                                <span>Total</span>
                                            </b>
                                        </td>
                                        <td class="column5">
                                            <b>
                                                <span t-esc="o.total_amount"/>
                                            </b>
                                        </td>
                                        <td class="column5">
                                            <b>
                                                <span t-esc="o.total_interest"/>
                                            </b>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="paper_format_salary_advance" model="report.paperformat">
        <field name="name">Salary Advance Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>

    <report string="Salary Advance Report" id="salary_advance_report" model="salary_advance_report_download" report_type="qweb-pdf" attachment_use="True" name="payroll_inherit.payroll_salary_advance_template" file="payroll_inherit.payroll_salary_advance_template" paperformat="payroll_inherit.paper_format_salary_advance" />
</odoo>
