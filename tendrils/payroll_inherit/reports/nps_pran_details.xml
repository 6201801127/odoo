<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <record id="nps_pran_report_view_tree" model="ir.ui.view">
            <field name="name">nps_pran_report_view_tree</field>
            <field name="model">nps_pran_details</field>
            <field name="arch" type="xml">
                <tree>
					<field name="job_branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="employee_code"/>
                    <field name="employee_name" />
                    <field name="job_id"/>
					<field name="date_of_joining"/>
					<field name="birthday"/>
					<field name="work_email"/>
					<field name="action_taken_date" widget='date'/>
					<field name="is_nps"/>
					<field name="contribution"/>
					<field name="pran_no" readonly='1'/>
                    <field name="state"/>
					<button name="view_all_nps_log" string=" View Log" type="object" class="btn btn-warning fa fa-eye"/>
                </tree>
            </field>
        </record>


		<record id="nps_update_data_view_nps_log_tree" model="ir.ui.view">
			<field name="name">nps_update_data_view_nps_log_tree</field>
			<field name="model">nps_update_data</field>
			<field name="arch" type="xml">
				<tree create='0' delete='0' import='0' default_order="create_date asc">
					<field name="employee_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="create_date" string='Requested On' readonly='1' widget='date'/>
					<field name="is_nps" readonly='1'/>
					<field name="contribution" readonly='1'/>
					<field name="pran_no" readonly='1'/>
					<field name="remark" readonly='1'/>
					<field name="action_taken_by" readonly='1'/>
					<field name="action_taken_on" readonly='1' widget='date'/>
					<field name="state" readonly='1'/>
					<field name="remark_of_action" readonly='1'/>
				</tree>
			</field>
		</record>



		<record id="nps_pran_report_search_view" model="ir.ui.view">
            <field name="name">nps_pran_report_search_view</field>
            <field name="model">nps_pran_details</field>
            <field name="arch" type="xml">
                <search>
					<field name="employee_id"/>
					<field name="department_id"/>
					<field name="job_branch_id"/>
                </search>
            </field>
        </record>



      
		
        <record id="nps_pran_report_action" model="ir.actions.act_window">
			<field name="name">PRAN Details</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">nps_pran_details</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
            <field name="search_view_id" ref="nps_pran_report_search_view"/>
			<field name="context">{'create':False,'edit':False,'delete':False,'import':False,'duplicate':False}</field>
		</record> 



		<menuitem name="NPS" id="nps_report_main_menu" parent="hr.menu_hr_reporting_timesheet" sequence="400"/>

		<menuitem name="PRAN Details" id="nps_pran_report_menu" parent="payroll_inherit.nps_report_main_menu" action="nps_pran_report_action" sequence="1"/>
	</data>
</odoo>