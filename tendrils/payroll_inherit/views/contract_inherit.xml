<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_form_inherit">
            <field name="name">hr.employee.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <field name="manager" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="bank_account_id" position="attributes">
                    <attribute name="context">{'active_user':user_id,'user_bank':bank_account_id}</attribute>
                </field>
                <field name="esi_applicable" position="after">
                    <field name="check_user" invisible='1' />
                    <field name="struct_id" attrs="{'required':[('check_user','=',True)]}" />
                </field>
                <xpath expr="//button[@name='%(hr_payroll.act_hr_employee_payslip_list)d']"
                    position="attributes">
                    <attribute name="invisible">1</attribute>
                    <!-- <attribute name="groups"></attribute> -->
                </xpath>
                <field name="enable_epf" position="replace" />
                <field name="enable_gratuity" position="replace" />
                <field name="esi_applicable" position="replace" />
                <field name="pf_deduction" position="replace" />
                <field name="bank_account_id" position="replace">
                    <field name="bankaccount_id" />
                    <field name="bank_account" />
                </field>
                <field name="enable_payroll" position="after">
                    <field name="is_consolidated"
                        attrs="{'invisible':[('enable_payroll','=','no')]}" />
                    <field name="enable_epf" widget="radio" options="{'horizontal': true}"
                        attrs="{'invisible':['|','&amp;',('enable_payroll','=','yes'),('is_consolidated','=', True),('enable_payroll','=','no')]}" />
                    <field name="pf_deduction"
                        attrs="{'invisible': ['|',('enable_epf','=', False),('enable_epf','=', 'no')]}"
                        widget='radio' options="{'horizontal': true}" force_save='1' />
                    <field name="enable_gratuity" widget="radio" options="{'horizontal': true}"
                        attrs="{'invisible':['|','&amp;',('enable_payroll','=','yes'),('is_consolidated','=', True),('enable_payroll','=','no')]}" />
                </field>
                <field name="current_ctc" position="after">
                    <field name="esi_applicable"
                        attrs="{'invisible':['|','&amp;',('enable_payroll','=','yes'),('is_consolidated','=', True),('enable_payroll','=','no')]}" />
                </field>
                <xpath expr="//group[@name='Allowance Information at Joining Time']"
                    position="attributes">
                    <attribute name="invisible">[('is_consolidated', '=', True)]</attribute>
                </xpath>
                <xpath expr="//group[@name='Basic Amount']"
                    position="attributes">
                    <attribute name="invisible">[('is_consolidated', '=', True)]</attribute>
                </xpath>
                <button name="toggle_active" position="before">
                    <field name="payslip_boolean" invisible='1' />
                    <button name="button_payslip_status" class="oe_stat_button" icon="fa-money"
                        type="object" attrs="{'invisible':[('payslip_boolean','=',False)]}">
                        <field name="num_payslip_count" widget="statinfo" string="Payslips" />
                    </button>
                </button>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_contract_form_inherit2">
            <field name="name">hr.employee.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(hr_contract.act_hr_employee_2_hr_contract)d']"
                    position="attributes">
                    <attribute name="groups"></attribute>
                    <attribute name="groups">kw_employee.group_payroll_manager</attribute>
                </xpath>
                <xpath expr="//page[@name='hr_settings']/group/group[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit':True, 'no_open': True}</attribute>
                </xpath> -->
            </field>
        </record>
        <record model="ir.ui.view" id="hr_contract_kanban_inherit">
            <field name="name">hr.contract.kanbaninherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_kanban" />
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_contract_tree_inherit">
            <field name="name">hr.contract.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree" />
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </field>
                <field name="employee_id" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </field>
                <field name="job_id" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </field>
                <field name="type_id" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </field>
                <field name="resource_calendar_id" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                    <attribute name="options">{'no_create': True, 'no_edit':True, 'no_open': True}</attribute>
                </field>
                <field name="date_start" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </field>
                <field name="date_end" position="attributes">
                    <attribute name="groups">
                        kw_employee.group_payroll_manager,hr_payroll.group_hr_payroll_manager</attribute>
                </field>
            </field>
        </record>
        <!-- hr.contract tree view -->
        <record id="contract_bonus_update_view_tree_inherit" model="ir.ui.view">
            <field name="name">hr.contract.view.tree</field>
            <field name="model">hr.contract</field>
            <field name="priority">150</field>
            <field name="arch" type="xml">
                <tree delete='0' create='0' editable='top'>
                    <field name="employee_id" invisible='1' />
                    <field name="code" />
                    <field name="emp_name" />
                    <field name="grade" />
                    <field name="level" />
                    <field name="productivity" widget="monetary"
                        options="{'currency_field': 'currency_id'}" readonly='1' />
                    <field name="commitment" widget="monetary"
                        options="{'currency_field': 'currency_id'}" />
                    <field name="prof_persuit" widget="monetary"
                        options="{'currency_field': 'currency_id'}" />
                    <field name="ltc" widget="monetary" options="{'currency_field': 'currency_id'}" />
                </tree>
            </field>
        </record>
        <!-- hr.contract action window -->
        <record id="bonus_contract_action" model="ir.actions.act_window">
            <field name="name">Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.contract</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('state','=','open')]</field>
            <field name="view_id" ref="contract_bonus_update_view_tree_inherit" />
        </record>
        <record model="ir.ui.view" id="hr_contract_l10n_form_inherit">
            <field name="name">hr.contractl10n.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_in_hr_payroll.hr_contract_form_in_inherit" />
            <field name="arch" type="xml">
                <data>
                    <!-- <form>
               <xpath expr="//group[@name='salary_and_advantages']" position="before">
                    <group col="2" colspan="2" name="mid_column"> -->
                    <xpath
                        expr="//group[@name='right_column']/field[@name='house_rent_allowance_metro_nonmetro']"
                        position="replace"></xpath>
                    <xpath expr="//group[@name='right_column']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//group[@name='left_column']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <field name="company_id" position="attributes">
                        <attribute name="readonly">1</attribute>
                        <attribute name="options">{"no_open": True, "no_create": True,"no_edit": True}</attribute>
                    </field>
                    <field name="company_id" position="before">
                        <field name="date_of_joining" />
                    </field>
                    <field name="struct_id" position="before">
                        <field name="currency_id" readonly='1'
                            options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" />
                        <field name="limit_pf_boolean" invisible="1" />
                        <field name="limit_pf_basic" invisible="1" />
                    </field>

                    <field name="voluntary_provident_fund" position="after">
                        <field name="lwop" />
                        <field name="salary_adv" />
                    </field>
                    <xpath expr="//group[@name='salary_and_advantages']" position="inside">
                        <group>
                            <button name ="update_salary_structure" type="object" class="oe_highlight" string="Update Salary" attrs="{'invisible': [('check_contract_bool','=', False)]}" confirm="Are you sure you wish to proceed with updating the salary?"/>
                            <separator/>
                            <separator/>

                            <field name="at_join_time_ctc" widget="monetary"
                                options="{'currency_field': 'currency_id'}" readonly='1' />
                            <field name="basic_at_join_time" widget="monetary"
                                options="{'currency_field': 'currency_id'}" readonly='1' />
                            <field name="wage" string='Current CTC' />
                            <field name="current_basic" widget="monetary"
                                options="{'currency_field': 'currency_id'}" />
                            <field name="check_contract_bool" invisible='1'/>
                            <field name="house_rent_allowance_metro_nonmetro" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <field name="hra_amount" widget="monetary"
                                options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <field name="conveyance" string='Conveyance(%)' attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <field name="productivity" widget="monetary"
                                options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <field name="commitment" widget="monetary"
                                options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <separator />
                            <field name="prof_persuit" widget="monetary"
                                options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <field name="ltc" widget="monetary"
                                options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <separator />

                            <field name="bonus" widget="monetary"
                                options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('check_contract_bool','=', False)]}"/>
                            <field name="salary_confirmed_bool" invisible='1' />
                        </group>
                    </xpath>
                    <xpath expr="//group[@name='salary_and_advantages']" position="after">

                        <group>
                            <group attrs="{'invisible': [('check_contract_bool','=', False)]}">

                                <field name="is_consolidated" force_save="1" />
                                <field name="enable_epf" widget="radio"
                                    options="{'horizontal': true}"
                                    attrs="{'invisible': [('is_consolidated','=', True)]}"
                                    force_save="1" />
                                <field name="pf_deduction"
                                    attrs="{'invisible': ['|','|',('enable_epf','=', False),('enable_epf','=', 'no'),('is_consolidated','=', True)]}"
                                    widget="radio" options="{'horizontal': true}" force_save="1" />
                                <field name="epf_percent"
                                    attrs="{'invisible': ['|','|','|',('pf_deduction','!=','other'),('enable_epf','=', False),('enable_epf','=', 'no'),('is_consolidated','=', True)],'required': [('pf_deduction','=', 'other')]}" />
                                <field name="employer_pf"
                                    attrs="{'invisible': ['|','|','|',('pf_deduction','!=','other'),('enable_epf','=', False),('enable_epf','=', 'no'),('is_consolidated','=', True)],'required': [('pf_deduction','=', 'other')]}" />
                                <field name="eps_enable"
                                    attrs="{'invisible': [('is_consolidated','=', True)]}"
                                    force_save="1" />
                                <field name="enable_gratuity" widget="radio"
                                    options="{'horizontal': true}"
                                    attrs="{'invisible': [('is_consolidated','=', True)]}"
                                    force_save="1" />
                                <field name="esi_applicable"
                                    attrs="{'invisible': [('is_consolidated','=', True)]}"
                                    force_save="1" />
                                <field name="uan_id" />
                                <field name="esi_id" />
                                <field name="enable_jsw" />
                                <field name="jsw_pb_cb"  attrs="{'invisible': [('enable_jsw','=', False)]}" force_save ='1'/>
                                <!-- <field name="employee_nps_id" invisible='1'/> -->
                                <field name="is_nps" force_save ='1' string="NPS Participation"/>
                                <field name="contribution" attrs="{'invisible': [('is_nps','!=', 'Yes')]}" force_save ='1' string="NPS Contribution"/>
                                <field name="existing_pran_no" invisible='1' force_save ='1' string="Existing Pran"/>
                                <field name="pran_no" attrs="{'invisible': [('is_nps','!=', 'Yes')]}" force_save ='1' string="PRAN"/>
                            </group>
                            <group string='Kenya Configuration' attrs="{'invisible': [('check_contract_bool','=', True)]}">
                                <field name="enable_nssf"/>
                                <field name="nssf_no"/>
                                <field name="enable_nhif"/>
                                <field name="nhif_no"/>
                            </group>
                        </group>
                        <group>
                            <group string='Salary Bank Details'>
                                <field name="bank_id" />
                                <field name="bank_account" />
                            </group>
                        </group>
                        <group>
                            <group string='Personal Bank Details'>
                                <field name="personal_bank_name" />
                                <field name="personal_bank_account" />
                                <field name="personal_bank_ifsc" />
                            </group>
                        </group>
                    </xpath>
                    <xpath expr="//div[@name='wage']" position="replace"></xpath>
                    <xpath expr="//group[@name='salary_and_advantages']" position="attributes">
                        <attribute name="string">Monthly Remuneration</attribute>
                    </xpath>
                    <xpath expr="//group[@name='salary_and_advantages']/label" position="replace"></xpath>
                    <xpath expr="//field[@name='type_id']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='employee_id']" position="attributes">
                        <attribute name="options">{'no_open':True}</attribute>
                        <attribute name="readonly">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='department_id']" position="attributes">
                        <attribute name="options">{'no_open':True}</attribute>
                        <attribute name="readonly">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='job_id']" position="attributes">
                        <attribute name="options">{'no_open':True}</attribute>
                        <attribute name="readonly">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='job_id']" position="after">
                        <field name="grade"
                            options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" />
                        <field name="level"
                            options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" />
                    </xpath>
                    <xpath expr="//field[@name='struct_id']" position="attributes">
                        <attribute name="options">{'no_open':True}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='reported_to_secretariat']" position="replace"></xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="res_bank_form_inherit">
            <field name="name">res.bank.inherit</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="kw_id" />
                    <field name="account_type" invisible='1'/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="res_bank_tree_inherit">
            <field name="name">res.bank.inherit</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_tree" />
            <field name="arch" type="xml">
                <field name="country" position="after">
                    <field name="kw_id" />
                    <field name="account_type" invisible='1'/>
                </field>
            </field>
        </record>


        <record id="hr_contract_update_bank_view_tree" model="ir.ui.view">
            <field name="name">hr.contract.view.tree</field>
            <field name="model">hr.contract</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="employee_id" invisible='1' />
                    <field name="code" readonly='1' />
                    <field name="emp_name" readonly='1' />
                    <field name="date_of_joining" />
                    <field name="job_id" readonly='1' />
                    <field name="department_id" readonly='1' />
                    <field name="base_branch_id" readonly='1' />
                    <field name="bank" invisible='1' />
                    <field name="bank_id"
                        options="{'no_open': True,'no_create':True,'no_edit':True}" />
                    <field name="bank_account" />
                    <!-- <field name="user_id" invisible='1'/>
                    <field name="partner_id" invisible='1' /> -->
                    <!-- <field name="bankaccount_id" string='Bank Account Number'
                    context="{'form_view_ref':
                    'payroll_inherit.bank_account_form_inherit','active_user':user_id,'user_bank':bankaccount_id}"
                    required="1" /> -->
