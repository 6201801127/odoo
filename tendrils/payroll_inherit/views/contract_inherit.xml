        <!-- hr.contract search view -->
        <record id="hr_contract_view_search_for_bank" model="ir.ui.view">
            <field name="name">hr.contract.view.search</field>
            <field name="model">hr.contract</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="employee_id" />
                    <field name="name" />
                    <field name="bank_id" />
                    <field name="bank_account" />
                    <filter string="Bank Not Set" domain="[('bank_id','=',False)]" name="bank" />
                    <filter string="Account Not Set" domain="[('bank_account','=',False)]"
                        name="account" />
                </search>
            </field>
        </record>
        <record id="hr_contract_bank_details_action" model="ir.actions.act_window">
            <field name="name">Update Bank Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.contract</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'create': False, 'delete': False, 'import': False}</field>
            <field name="domain">[('state','=', 'open')]</field>
            <field name="search_view_id" ref="hr_contract_view_search_for_bank" />
            <field name="view_ids"
                eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_contract_update_bank_view_tree')})]" />
        </record>
        <menuitem id="verify_payroll_menu" name="Finance"
            parent="hr.menu_hr_reporting_timesheet" sequence="40"
            groups="payroll_inherit.payroll_verify_group" />

        <menuitem id="finance_payroll_menu" name="Finance"
            parent="hr_payroll.menu_hr_payroll_root" sequence="99"
            groups="payroll_inherit.payroll_finance_group" />

        <!-- This Menu Item must have a parent and an action -->

        <!-- This Menu Item must have a parent and an action -->
