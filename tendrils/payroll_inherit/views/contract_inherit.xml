            sequence="15" groups="payroll_inherit.payroll_verify_group" />


        <record id="nhif_report_tree_view" model="ir.ui.view">
            <field name="name">nhif.view.tree</field>
            <field name="model">hr.payslip</field>
            <field name="priority">500</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='0'>
                    <field name="salary_confirm_year" force_save='1'/>
                    <field name="salary_month_string" force_save='1'/>
                    <field name="emp_code"/>
