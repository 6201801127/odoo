                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_bank_tree_inherit')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_bank_form_inherit')})]" />
        </record>

        <menuitem id="bank_root_menu_act"
            name="Bank" parent="hr.menu_hr_reporting_timesheet"
            action="res_bank_master_action" sequence="1"
        />
        <menuitem id="bank_menu_act"
            name="Bank Master" parent="bank_root_menu_act"
            action="res_bank_master_action" sequence="1"
        />
        <menuitem id="update_bank_details_menu" name="Update Bank Details"
            parent="payroll_inherit.bank_root_menu_act"
            action="hr_contract_bank_details_action"
            sequence="20"
        />

        <menuitem id="bonus_update_contract_menu" name="Update Contract Menu"
