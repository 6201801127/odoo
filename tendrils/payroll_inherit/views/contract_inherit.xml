                    <field name="nhif" sum='Total' />
                </tree>
            </field>
        </record>

        <record id="payslip_nhif_report_action" model="ir.actions.act_window">
            <field name="name">NHIF Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payslip</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="nhif_report_tree_view" />
            <field name="context">{'search_default_company_id':1,'search_default_current_year_salary':1,'search_default_current_month_salary':1}</field>
            <field name="search_view_id" ref="hr_payroll.view_hr_payslip_filter"/>
        </record>
        <record id="housing_levy_report_tree_view" model="ir.ui.view">
            <field name="name">housing.view.tree</field>
            <field name="model">hr.payslip</field>
            <field name="priority">200</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import='0'>
                    <field name="salary_confirm_year" />
                    <field name="salary_month_string" />
