<odoo>
    <data>
        <record model="ir.ui.view" id="payment_advice_form_inherit">
            <field name="name">hr.payroll.advice.inherit</field>
            <field name="model">hr.payroll.advice</field>
            <field name="inherit_id" ref="l10n_in_hr_payroll.view_hr_bank_advice_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//button[@name='compute_advice']" position="after">
                    <button name="%(action_hr_payment_batches_generate)d" type="action" states="draft" string="Generate Payment Batches" class="oe_highlight" context = "{'default_advice': id}"/>

                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="bank_account_form_inherit">
            <field name="name">hr.payroll.bank.account.inherit</field>
            <field name="model">res.partner.bank</field>
            <!-- <field name="inherit_id" ref="res_partner_bank.view_partner_bank_form"/> -->
			<field name="context">{}</field>
            <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <group>
                                <group>
                                    <field name="bank_id" required='1'/>
                                    <field name="acc_holder_name" required='1'/>
                                    <field name="acc_number" required='1'/>
                                </group>
                                <group>
                                    <field name="partner_id" options='{"no_open": True}'/>
                                    <field name="acc_type" />
                                    <field name="company_id" invisible = "1"/>
                                    <!-- <field name="aba_routing"/> -->
                                </group>
                            </group>
                        </sheet>
                    </form>
            </field>
        </record>
    </data>
</odoo>
