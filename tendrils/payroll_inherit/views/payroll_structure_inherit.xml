<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_payroll_structure_inherit">
            <field name="name">payroll.structure.form.inherit</field>
            <field name="model">hr.payroll.structure</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="department_id" domain="[('dept_type.code', '=', 'department')]"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="base_branch_id"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="division" domain="[('parent_id','=', department_id)]"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="grade"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="section"  domain="[('parent_id','=', division)]"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="band"   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="practise" domain="[('parent_id','=', section)]"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>