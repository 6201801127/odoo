<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="block_salary_record_view_tree" model="ir.ui.view">
            <field name="name">block_salary_record.view.tree</field>
            <field name="model">hr_block_salary</field>
            <field name="arch" type="xml">
                <tree delete='0'>
                    <!-- Add your fields here -->
                    <field name="year"/>
                    <field name="month"/>
                    <field name="employee_id" domain="['|', ('active', '=', False), ('active', '=', True)]"/>
                    <field name="department_id" />
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                    <field name="job_id" />
					<field name="company_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="reason"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <!-- hr_block_salary form view -->
        <record id="hr_block_salary_view_form" model="ir.ui.view">
            <field name="name">hr_block_salary.view.form</field>
            <field name="model">hr_block_salary</field>
            <field name="arch" type="xml">
                <form string="" delete='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name="year"/>
                                <field name="month"/>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}" context="{'tree_view_ref':'kw_hr_leaves.hr_employee_encashment_tree_view'}" required='1'/>
                                <field name="department_id"/>
                                <field name="division"/>
                                <field name="section"/>
                                <field name="practise"/>
                                <field name="job_id"/>
                                <field name="company_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
                                <field name="reason"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- hr_block_salary search view -->
        <record id="hr_block_salary_view_search" model="ir.ui.view">
            <field name="name">hr_block_salary.view.search</field>
            <field name="model">hr_block_salary</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <filter string="Active" name="active_record" domain="[('active','=',True)]"/>
                    <filter string="Inactive" name="inactive_record" domain="[('active','=',False)]"/>
                    <filter string="This Month" name="current_month_year" domain="[('current_month','=',True)]"/>
					<filter string="January" domain="[('month','=',1)]" name="january_attendance"/>
					<filter string="February" domain="[('month','=',2)]" name="february_attendance"/>
					<filter string="March" domain="[('month','=',3)]" name="march_attendance"/>
					<filter string="April" domain="[('month','=',4)]" name="april_attendance"/>
					<filter string="May" domain="[('month','=',5)]" name="may_attendance"/>
					<filter string="June" domain="[('month','=',6)]" name="june_attendance"/>
					<filter string="July" domain="[('month','=',7)]" name="july_attendance"/>
					<filter string="August" domain="[('month','=',8)]" name="august_attendance"/>
					<filter string="September" domain="[('month','=',9)]" name="september_attendance"/>
					<filter string="October" domain="[('month','=',10)]" name="october_attendance"/>
					<filter string="November" domain="[('month','=',11)]" name="november_attendance"/>
					<filter string="December" domain="[('month','=',12)]" name="december_attendance"/>
					<group expand="0" string="Group By">
						<filter string="Employee" name="employee" context="{'group_by':'employee_id'}"/>
						<filter string="Company" name="company" context="{'group_by':'company_id'}"/>
					</group>
                </search>
            </field>
        </record>
        <!-- model.name action window -->
        <record id="block_salary_record_action" model="ir.actions.act_window">
            <field name="name">Employee Block Salary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr_block_salary</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>

        </record>


