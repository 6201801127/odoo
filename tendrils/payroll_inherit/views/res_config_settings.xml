<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="payroll_res_config_settings_view_form_inherit" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.payroll</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="hr_payroll.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='hr_payroll_accountant']" position="after">
				<h2>
					Payroll
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">
									<label for="esi_start_date" string="ESI First Period"
										class="col-3 col-lg-4 o_light_label" />
									<field name="esi_start_date" />
								</div>
								<div class="mt16 row">
									<label for="esi_end_date" string="ESI Second Period"
										class="col-3 col-lg-4 o_light_label" />
									<field name="esi_end_date" />
								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					Health Insurance Renewal
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">
									<label for="check_health_insurance"
										string="Check Health Insurance Dependant"
										class="col-3 col-lg-4 o_light_label" />
									<field name="check_health_insurance" />
									<label for="check_health_insurance_self"
										string="Check Health Insurance Self"
										class="col-3 col-lg-4 o_light_label" />
									<field name="check_health_insurance_self" />

								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					EL Deduction
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">
									<label for="check_el_deduction" string="Check EL Deduction"
										class="col-3 col-lg-4 o_light_label" />
									<field name="check_el_deduction" />
								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					Payroll Data
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">
									<label for="payroll_data" string="Payroll Data"
										class="col-3 col-lg-4 o_light_label" />
									<field name="payroll_data" />
								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					Enable Canteen Deduction
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">
									<label for="enable_canteen_deduction" string="Enable Canteen"
										class="col-3 col-lg-4 o_light_label" />
									<field name="enable_canteen_deduction" />
								</div>
							</div>
						</div>
					</div>
				</div>

				<h2>
					Enable Month Days Calculation
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">

									<label for="enable_month" string="Enable Month Days"
										class="col-3 col-lg-4 o_light_label" />
									<field name="enable_month" />

								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					Enable Haalth Insurance Form
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">

									<label for="enable_health_insurance_form"
										string="Enable Health Insurance Form"
										class="col-3 col-lg-4 o_light_label" />
									<field name="enable_health_insurance_form" />

								</div>
								<div class="text-muted">
									Health Insurance Page After Login
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">

									<label for="health_insurance_submitting_date"
										string="Health Insurance submitting Date"
										class="col-3 col-lg-4 o_light_label" />
									<field name="last_date_of_submitting_health_insurance_details" />

								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">

									<label for="enable_health_insurance_home_page"
										string="Enable Health Insurance Home Page"
										class="col-3 col-lg-4 o_light_label" />
									<field name="enable_health_insurance_home_page" />

								</div>
								<div class="text-muted">
									Enable Health Insurance Home Page
								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					Enable Bank Update Form
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">

									<label for="check_bank_update" string="Enable Bank Update Page"
										class="col-3 col-lg-4 o_light_label" />
									<field name="check_bank_update" />

								</div>
								<div class="text-muted">
									Enable Bank Update Page
								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					Enable Zero Payslip
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">

									<label for="enable_zero_payslip" string="Zero payslip"
										class="col-3 col-lg-4 o_light_label" />
									<field name="enable_zero_payslip" />

								</div>
							</div>
						</div>
					</div>
				</div>
				<h2>
					NSSF Configuration
				</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="content-group">
								<div class="mt16 row">
									<label for="min_value_nssf" string="Minimum Value"
										class="col-3 col-lg-4 o_light_label" />
									<field name="min_value_nssf" />
								</div>
								<div class="mt16 row">
									<label for="max_value_nssf" string="Maximum Value"
										class="col-3 col-lg-4 o_light_label" />
									<field name="max_value_nssf" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

	<record id="payroll_inherit_action" model="ir.actions.act_window">
		<field name="name">Settings</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.config.settings</field>
		<field name="view_mode">form</field>
		<field name="target">inline</field>
		<field name="context">{'module' : 'payroll_inherit'}</field>
	</record>


</odoo>