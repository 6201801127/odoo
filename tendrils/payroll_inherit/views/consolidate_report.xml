<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- consolidate_report tree view -->
        <record id="consolidate_report_view_tree" model="ir.ui.view">
            <field name="name">consolidate_report.view.tree</field>
            <field name="model">consolidate_report</field>
            <field name="arch" type="xml">
                <tree delete='0' edit='0' create='0'>
                    <field name="name" />
                    <field name="amount" />
                </tree>
            </field>
        </record>
        <record id="consolidate_salary_view_form" model="ir.ui.view">
            <field name="name">monthly_salary_report_filter.form</field>
            <field name="model">monthly_salary_report_filter</field>
            <field name="arch" type="xml">
                <form string="Filter">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="year" required="1" />
                            <field name="month" required="1" />
                        </group>
                    </sheet>
                    <footer>
                        <center>
                            <button name="action_submit" type="object" string="Submit"
                                class="oe_highlight" invisible="context.get('finance_verified', False)"/>
                            <button name="action_submit_hr" type="object" string="Submit"
                                class="oe_highlight" invisible="context.get('hr_verified', False)"/>
                        </center>
                    </footer>
                </form>
            </field>
        </record>


        <record id="monthly_salary_report_filter_action" model="ir.actions.act_window">
            <field name="name">Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">monthly_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="context">{'hr_verified':1}</field>
            <field name="target">new</field>
        </record>

        <record id="monthly_salary_report_filter_hr_action" model="ir.actions.act_window">
            <field name="name">Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">monthly_salary_report_filter</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="context">{'finance_verified':1}</field>
            <field name="target">new</field>
        </record>

       


    </data>
</odoo>