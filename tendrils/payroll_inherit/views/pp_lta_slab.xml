			<field name="name">PP LTA Slab Master</field>
			<field name="model">pp_lta_slab</field>
			<field name="arch" type="xml">
				<tree editable="top">
					<field name="ctc_from"/>
					<field name="ctc_to"/>
					<field name="pp"/>
					<field name="lta"/>
				</tree>
			</field>
		</record>
		

		<record id="pp_lta_slab_action" model="ir.actions.act_window">
			<field name="name">PP And LTA Slab Master</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pp_lta_slab</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
	
		<menuitem name="PP And LTA Slab Master" id="pp_lta_slab_menu" parent="hr_payroll.menu_hr_payroll_configuration" action="pp_lta_slab_action" sequence="100"/>

	</data>
</odoo>
