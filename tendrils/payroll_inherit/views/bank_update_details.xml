<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="bank_details_update_view_tree" model="ir.ui.view">
            <field name="name">bank_details_update.view.tree</field>
            <field name="model">bank_details_update</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="location"/>
                    <field name="department"/>
                    <field name="designation"/>
                    <field name="employee_id" invisible='1'/>
                    <field name="emp_code"/>
                    <field name="name"/>
                    <field name="old_bank_id"/>
                    <field name="old_ifsc"/>
                    <field name="old_bank_account"/>
                    <field name="create_date" string='Update Time'/>
                    <field name="bank_id"/>
                    <field name="ifsc"/>
                    <field name="bank_account"/>
                </tree>
            </field>
        </record>
        <!-- bank_details_update action window -->
        <record id="bank_details_update_action" model="ir.actions.act_window">
            <field name="name">Salary Account Update By Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank_details_update</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'create': False,'edit':False,'delete':False}</field>
        </record>

        <menuitem id="update_contract_bank_details" 
                    name="Salary Account Update By Employee" parent="payroll_inherit.bank_root_menu_act" 
                    action="bank_details_update_action" sequence="40"  
                    />
    </data>
</odoo>
