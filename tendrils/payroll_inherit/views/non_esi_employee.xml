<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="non_esi_employee_view_tree" model="ir.ui.view">
            <field name="name">Non ESI Report</field>
            <field name="model">non_esi_employee_report</field>
            <field name="arch" type="xml">
                <tree create='0' editable='bottom' delete='0'>
                    <field name="fiscalyr" readonly='1'/>
                    <field name="emp_code" readonly='1'/>
                    <field name="employee_id" readonly='1' options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" readonly='1'/>
                    <!-- <field name="previous_salary" readonly='1'/> -->
                    <!-- <field name="current_salary" readonly='1'/> -->
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- <record id="non_esi_report_server_action" model="ir.actions.server">
            <field name="name">Non ESI Report</field>
            <field name="model_id" ref="model_non_esi_employee_report"/>
            <field name="state">code</field>
            <field name="code">action = model.report_non_esi_employees()</field>
        </record> -->

        <!-- non_esi_report_server_action action window -->
        <record id="non_esi_report_action" model="ir.actions.act_window">
            <field name="name">ESI Disabled Forecast Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">non_esi_employee_report</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="non_esi_employee_menu"
            name="ESI Disabled Forecast Report"
            sequence="250"
            action="non_esi_report_action"
            parent="payroll_inherit.health_insurance_employee"/>
    </data>
</odoo>