<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- model.name tree view -->
		<record id="nhif_master_view_tree" model="ir.ui.view">
			<field name="name">NHIF Master</field>
			<field name="model">nhif_master</field>
			<field name="arch" type="xml">
				<tree editable="top">
					<field name="gross_from"/>
					<field name="gross_to"/>
					<field name="nhif"/>
				</tree>
			</field>
		</record>
		

		<record id="nhif_master_action" model="ir.actions.act_window">
			<field name="name">NHIF Master</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">nhif_master</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
	
		<menuitem name="NHIF Master" id="nhif_master_menu" parent="hr_payroll.menu_hr_payroll_configuration" action="nhif_master_action" sequence="13"/>

	</data>
</odoo>
