<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="health_insurance_dependant_mail_template" model="mail.template">
            <field name="name">Insurance: Health insurance dependent Request</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject"> Health insurance dependent Request</field>
            <field name="email_to">${ctx['emails']}</field>
            <field name="model_id" ref="payroll_inherit.model_health_insurance_dependant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear Manager,</span>
                                    </h5>
                                   
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       <b> ${object.env.user.name}</b> has been applied for  health insurance dependent,</b>
                                        <br/>as per the table below for your necessary action.
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 24px;">
                                        Insurance Details:
                                    </p>

                                    <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                        <tr>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Relationship</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name </th>
                                            <th style="height: 30px;width:40%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Date of Birth</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Amount</th>
                                        </tr>
                                        % for rec in object.family_details_ids:
                                            <tr>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:20%;">
                                                    ${rec.relationship_id.name}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                                    ${rec.dependant_id}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:50%;">
                                                    ${format_tz(rec.date_of_birth, format="%d-%b-%Y")}
                                                </td>
                                                <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                                   ${"%.2f" % rec.insurance_amount}
                                                </td>
                                            </tr>
                                        % endfor
                                    </table>
                                </div>
                                <br/>
                                <br/>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is an automatically  generated email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>  
               
            </field>
        </record>


        <record id="health_insurance_approved_mail_template" model="mail.template">
            <field name="name">Insurance: Health insurance approved</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject"> Health insurance dependent approved</field>
            <field name="email_to">${object.employee_id.email}</field>
            <field name="model_id" ref="payroll_inherit.model_health_insurance_dependant"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
               <table border="0">
                    <tr>
                    <td>

                    <div style="margin-left: 1.2rem;margin-bottom:1em;">
                        <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear ${object.employee_id.name},</span>
                        </h5>
                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                             Your  health insurance dependent is approved by <b> ${object.env.user.employee_ids.name},</b>
                            <br/>as per the table below for your necessary action.
                        </p>

                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 24px;">
                            EMI Details:
                        </p>

                        <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                        <tr>
                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Year</th>
                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Month </th>
                            <th style="height: 30px;width:40%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Amount</th>
                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Status</th>
                        </tr>

                        % for rec in object.emi_details_ids:
                            <tr>
                                <td style="padding-left:5px;color:#676767;height: 34px;width:20%;">
                                    ${rec.year}
                                </td>
                                <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                    ${rec.month}
                                </td>
                                <td style="padding-left:5px;color:#676767;height: 34px;width:50%;">
                                    ${"%.2f" % rec.installment}
                                </td>
                                <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                    ${rec.status}
                                </td>
                            </tr>
                        % endfor
                        </table>
                    </div>
                    <br/>
                    <br/>
                    <div style="margin-left: 1.2rem;margin-bottom:1em;">
                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                          This is an automatically generated email.
                        </p>
                    </div>
                    </td>
                </tr>
            </table>

                    ]]>
            </field>
        </record>


        <record id="esi_updated_mail_template" model="mail.template">
            <field name="name">ESI: Non ESI Employee's List</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Employee Details | Expiry of ESI Benefit</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="kw_employee.model_hr_employee"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear Team,</span>
                                    </h5>
                                   
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please refer to the list of employees whose ESI benefits are expiring soon.            
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 24px;">
                                        Employee Details:
                                    </p>

                                    <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                        <tr>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Emp. Code</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name </th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department </th>
                                        </tr>
                                        % for row in ctx.get('emp_list'):
                                        <tr>
                                            <td><strong> ${row.split(':')[0]}</strong></td>
                                            <td><strong> ${row.split(':')[1]}</strong></td>
                                            <td><strong> ${row.split(':')[2]}</strong></td>
                                        </tr>
                                    %endfor
                                    </table>
                                </div>
                                <br/>
                                <br/>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Thanks
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>  
               
            </field>
        </record>

        <record id="personal_insurance_expired_mail_template" model="mail.template">
            <field name="name">Insurance: Expired</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">${ctx['subject']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="model_id" ref="kw_employee.model_hr_employee"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear Team,</span>
                                    </h5>
                                   
                                    %if ctx['country'] == 'IND':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please refer the list of employees, whose Personal health insurance will expire soon on the dates listed below.   
                                    </p>
                                    %endif

                                    %if ctx['country'] == 'OTH':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please refer the list of employees, whose International health insurance will expire soon on the dates listed below.   
                                    </p>
                                    %endif
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 24px;">
                                        Employee Details:
                                    </p>

                                    <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                        <tr>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Emp. Code</th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Name </th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department </th>
                                            <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Insurance Expiry Date </th>
                                        </tr>
                                        % for row in ctx.get('emp_list'):
                                        <tr>
                                            <td><strong> ${row.split(':')[0]}</strong></td>
                                            <td><strong> ${row.split(':')[1]}</strong></td>
                                            <td><strong> ${row.split(':')[2]}</strong></td>
                                            <td><strong> ${row.split(':')[3]}</strong></td>
                                        </tr>
                                    %endfor
                                    </table>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Thanks.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>  
               
            </field>
        </record>
    </data>
</odoo>