<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="relationship_insurance_amount_list">
			<field name="name">Relationship Insurance Amount</field>
			<field name="model">family_details</field>
			<field name="arch" type="xml">
				<tree create='0' import='0' delete='0' edit='0'>
					<field name="invisible_boolean" invisible="1"/>
					<field name="emp_location" attrs="{'invisible':[('invisible_boolean','=',False)]}" groups="kw_employee.group_payroll_manager"/>
					<field name="emp_department" attrs="{'invisible':[('invisible_boolean','=',False)]}" groups="kw_employee.group_payroll_manager"/>
					<field name="emp_code" attrs="{'invisible':[('invisible_boolean','=',False)]}" groups="kw_employee.group_payroll_manager"/>
					<field name="emp_name" attrs="{'invisible':[('invisible_boolean','=',False)]}" groups="kw_employee.group_payroll_manager"/>
					<field name="relationship_id" groups="kw_employee.group_payroll_manager"/>
					<field name="dependant_id" groups="kw_employee.group_payroll_manager"/>
					<field name="gender" groups="kw_employee.group_payroll_manager"/>
					<field name="date_of_birth" groups="kw_employee.group_payroll_manager"/>
					<field name="insurance_amount" groups="kw_employee.group_payroll_manager"/>
				</tree>
			</field>
		</record>

		<record id="relationship_insurance_amount_search" model="ir.ui.view">
			<field name="name">relationship_insurance_amount</field>
			<field name="model">family_details</field>
			<field name="type">search</field>
			<field name="mode">primary</field>
			<field name="priority" eval="16" />
			<field name="active" eval="True" />
			<field name="arch" type="xml">
				<search string="health_insurance_relationship_amount">
					<field name="emp_name"/>
					<filter string="This FY Year" name="this_year_relationship_amount" domain="[('year_id.date_start', '&lt;=', context_today().strftime('%Y/%m/%d')),
																								('year_id.date_stop', '&gt;=', context_today().strftime('%Y/%m/%d'))]"/>
				</search>
			</field>
		</record>

		<record id="relationship_insurance_amount_action" model="ir.actions.act_window">
			<field name="name">Relationship Insurance Amount</field>
			<field name="res_model">family_details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,search</field>
			<field name="domain">[]</field>
			<field name="context">{'search_default_this_year_relationship_amount':1}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
	</data>
</odoo>