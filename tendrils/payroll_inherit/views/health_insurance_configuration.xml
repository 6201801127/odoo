<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="health_insurance_configuration_list">
            <field name="name">Health Insurance Configuration</field>
            <field name="model">health_insurance_configuration</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="value"/>
                </tree>
            </field>

        </record>
        <record id="health_insurance_conf_window" model="ir.actions.act_window">
            <field name="name">Health Insurance Configuration</field>
            <field name="res_model">health_insurance_configuration</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Health Insurance Configuration"
                  id="health_insurance_configuration_id"
                  parent="health_insurance_employee"
                  action="health_insurance_conf_window" sequence="99"
                  groups='kw_employee.group_payroll_manager,hr.group_hr_manager,payroll_inherit.payroll_insurance_group'/>

    </data>
</odoo>

