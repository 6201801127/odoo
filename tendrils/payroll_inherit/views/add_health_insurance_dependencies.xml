<odoo>
    <data>


        <record model="ir.ui.view" id="add_health_insurance_dependencies_tree">
            <field name="name">Add New Health Insurance Dependant Tree</field>
            <field name="model">add_health_insurance_dependencies</field>
            <field name="arch" type="xml">
                <tree editable='top' import='0'>
                    <field name="health_insurance_id" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1' invisible='1'/>
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1' invisible='1'/>
                    <field name="year_id" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1' invisible='1'/>
                    <field name="department" force_save='1' invisible='1'/>
                    <field name="relationship_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('state', '!=', 'Requested')]}"/>
                    <field name="dependant_name" attrs="{'readonly': [('state', '!=', 'Requested')]}"/>
                    <field name="gender" attrs="{'readonly': [('state', '!=', 'Requested')]}"/>
                    <field name="date_of_birth" attrs="{'readonly': [('state', '!=', 'Requested')]}"/>
                    <field name="state" string='Status' readonly='1'/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="add_health_insurance_dependencies_tree_manager">
            <field name="name">Add New Health Insurance Dependant Tree Manager</field>
            <field name="model">add_health_insurance_dependencies</field>
            <field name="arch" type="xml">
                <tree import='0'>
                    <field name="health_insurance_id" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1' invisible='1'/>
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1' invisible='0'/>
                    <field name="year_id" options="{'no_open': True,'no_create':True,'no_edit':True}" force_save='1' invisible='0'/>
                    <field name="department"/>
                    <field name="relationship_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="dependant_name"/>
                    <field name="gender"/>
                    <field name="date_of_birth"/>
                    <field name="state" invisible='0'/>
                    <button name="approve_dependencies" type="object" string="Approve" class="btn btn-success" attrs="{'invisible':[('state','!=','Requested')]}"/>
                    <button name="reject_dependencies" type="object" string="Reject" class="btn btn-danger" attrs="{'invisible':[('state','!=','Requested')]}"/>
                </tree>
            </field>
        </record>



        <record model="ir.ui.view" id="add_health_insurance_dependencies_form">
            <field name="name">Add New Health Insurance Dependant Form</field>
            <field name="model">add_health_insurance_dependencies</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="approve_dependencies" type="object" string="Approve" class="btn btn-success" attrs="{'invisible':[('state','!=','Requested')]}"/>
                        <button name="reject_dependencies" type="object" string="Reject" class="btn btn-danger" attrs="{'invisible':[('state','!=','Requested')]}"/>
                        <field name="state" widget='statusbar'/>
                    </header>
                    <sheet>
                    <group>
                        <group>
                            <field name="year_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="department"/>
                        </group>
                        <group>
                            <field name="relationship_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="dependant_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="health_insurance_id" invisible='1'/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="health_insurance_added_dependant_approve_action" model="ir.actions.act_window">
            <field name="name">Requested Health Insurance Dependant Approval</field>
            <field name="res_model">add_health_insurance_dependencies</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','Requested')]</field>
            <field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('payroll_inherit.add_health_insurance_dependencies_tree_manager')}),
                                                    (0, 0, {'view_mode': 'form', 'view_id': ref('payroll_inherit.add_health_insurance_dependencies_form')}),]"/>
        </record>


        <menuitem name="Requested Dependant Approval" id="menu_view_added_health_insurance_dependant" parent="health_insurance_employee" sequence="3"
        action="health_insurance_added_dependant_approve_action" groups='hr_payroll.group_hr_payroll_manager,kw_employee.group_payroll_manager,payroll_inherit.payroll_insurance_group'/>


    
    </data>
</odoo>