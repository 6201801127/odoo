<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- model.name tree view -->
		<record id="nssf_master_view_tree" model="ir.ui.view">
			<field name="name">NSSF Report</field>
			<field name="model">nssf_master</field>
			<field name="arch" type="xml">
				<tree create='0' edit='0' delete='0'>
					<field name="year"/>
					<field name="month"/>
					<field name="employee_id"  invisible='1'/>
					<field name="code"/>
					<field name="name"/>
					<field name="gross" sum='Total'/>
					<field name="tire_1_pensionable_earnings" sum='Total'/>
					<field name="tire_1_employee_contribution" sum='Total'/>
					<field name="tire_1_employer_contribution" sum='Total'/>
					<field name="tire_1_total_contribution" sum='Total'/>
					<field name="tire_2_pensionable_earnings" sum='Total'/>
					<field name="tire_2_employee_contribution" sum='Total'/>
					<field name="tire_2_employer_contribution" sum='Total'/>
					<field name="tire_2_total_contribution" sum='Total'/>
					<field name="total_contribution" sum='Total'/>
					<field name="total_employee_contribution" sum='Total'/>
					<field name="total_employer_contribution" sum='Total'/>
				</tree>
			</field>
		</record>

	<!-- nssf_master search view -->
	<record id="nssf_master_view_search" model="ir.ui.view">
		<field name="name">nssf_master.view.search</field>
		<field name="model">nssf_master</field>
		<field name="arch" type="xml">
			<search string="Search Description">
				<!-- Add your fields here -->
                    <field name="year"/>
                    <field name="month"/>
                    <field name="employee_id"/>
                    <filter string="This Year" domain="[('year', 'like',context_today().strftime('%Y'))]" name="current_year_total_effort"/>
                    <separator/>
                    <filter string="January" domain="[('month','=','January')]" name="january_total_effort"/>
                    <filter string="February" domain="[('month','=','February')]" name="february_total_effort"/>
                    <filter string="March" domain="[('month','=','March')]" name="march_total_effort"/>
                    <filter string="April" domain="[('month','=','April')]" name="april_total_effort"/>
                    <filter string="May" domain="[('month','=','May')]" name="may_total_effort"/>
                    <filter string="June" domain="[('month','=','June')]" name="june_total_effort"/>
                    <filter string="July" domain="[('month','=','July')]" name="july_total_effort"/>
                    <filter string="August" domain="[('month','=','August')]" name="august_total_effort"/>
                    <filter string="September" domain="[('month','=','September')]" name="september_total_effort"/>
                    <filter string="October" domain="[('month','=','October')]" name="october_total_effort"/>
                    <filter string="November" domain="[('month','=','November')]" name="november_total_effort"/>
                    <filter string="December" domain="[('month','=','December')]" name="december_total_effort"/>
                    <separator/>
			</search>
		</field>
	</record>
		

		<record id="nssf_master_action" model="ir.actions.act_window">
			<field name="name">NSSF Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">nssf_master</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
	
		<!-- nssf_configuration tree view -->
		<record id="nssf_configuration_view_tree" model="ir.ui.view">
			<field name="name">nssf_configuration.view.tree</field>
			<field name="model">nssf_configuration</field>
			<field name="arch" type="xml">
				<tree editable='top'>
					<field name="date_from"/>
					<field name="date_to"/>
					<field name="min_value_nssf"/>
					<field name="max_value_nssf"/>
				</tree>
			</field>
		</record>

		<record id="nssf_nssf_configuration_action" model="ir.actions.act_window">
			<field name="name">NSSF Configuration</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">nssf_configuration</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>

		<menuitem name="NSSF Configuration" id="nssf_configuration_menu" parent="hr_payroll.menu_hr_payroll_configuration" action="nssf_nssf_configuration_action" sequence="15"/>

	</data>
</odoo>
