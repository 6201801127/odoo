<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- model.name tree view -->
		<record id="tax_master_view_tree" model="ir.ui.view">
			<field name="name">PAYE Report</field>
			<field name="model">tax_master</field>
			<field name="arch" type="xml">
				<tree create='0' edit='0' delete='0'>
					<field name="year"/>
					<field name="month"/>
					<field name="employee_id"  invisible='1'/>
					<field name="code"/>
					<field name="pin_no"/>
					<field name="name"/>
					<field name="gross_amt" sum='Total'/>
					<field name="nssf" sum='Total'/>
					<field name="nhif" sum='Total'/>
					<field name="gross_nssf" sum='Total'/>
					<field name="tax_payble" sum='Total'/>
					<field name="compute_personal_relief" sum='Total'/>
					<field name="compute_nhif_relief" sum='Total'/>
					<field name="tax" sum='Total'/>
				</tree>
			</field>
		</record>
				

		<!-- tax_master search view -->
		<record id="tax_master_view_search" model="ir.ui.view">
			<field name="name">tax_master.view.search</field>
			<field name="model">tax_master</field>
			<field name="arch" type="xml">
				<search string="Search Description">
					<!-- Add your fields here -->
					<field name="year"/>
                    <field name="month"/>
                    <field name="employee_id"/>
                    <filter string="This Year" domain="[('year', 'like',context_today().strftime('%Y'))]" name="current_year_total_effort"/>
                    <separator/>
                    <filter string="January" domain="[('month','=','January')]" name="january_total_effort"/>
                    <filter string="February" domain="[('month','=','February')]" name="february_total_effort"/>
                    <filter string="March" domain="[('month','=','March')]" name="march_total_effort"/>
                    <filter string="April" domain="[('month','=','April')]" name="april_total_effort"/>
                    <filter string="May" domain="[('month','=','May')]" name="may_total_effort"/>
                    <filter string="June" domain="[('month','=','June')]" name="june_total_effort"/>
                    <filter string="July" domain="[('month','=','July')]" name="july_total_effort"/>
                    <filter string="August" domain="[('month','=','August')]" name="august_total_effort"/>
                    <filter string="September" domain="[('month','=','September')]" name="september_total_effort"/>
                    <filter string="October" domain="[('month','=','October')]" name="october_total_effort"/>
                    <filter string="November" domain="[('month','=','November')]" name="november_total_effort"/>
                    <filter string="December" domain="[('month','=','December')]" name="december_total_effort"/>
                    <separator/>
				</search>
			</field>
		</record>
		

		<record id="tax_master_action" model="ir.actions.act_window">
			<field name="name">PAYE Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">tax_master</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to show...
				</p>
			</field>
		</record>
	

	</data>
</odoo>
