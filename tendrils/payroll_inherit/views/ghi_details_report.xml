<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="payroll_ghi_details_report_view_tree" model="ir.ui.view">
            <field name="name">payroll_ghi_details_report.view.tree</field>
            <field name="model">payroll_ghi_details_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0'>
                    <field name="insurance_year" />
                    <field name="period_from"/>
                    <field name="period_to"/>
                    <field name="employee_code" />
                    <field name="employee_id" />
                    <field name="emp_status" invisible='0'/>
                    <field name="department_id" />
                    <field name="job_branch_id" />
                    <field name="payroll_status" />
                    <field name="joining_date" />
                    <field name="date_of_employee_id_creation" />
                    <field name="last_working_day" />
                    <field name="gender" />
                    <field name="dob" />
                    <field name="status" string='Health Insurance status'/>
                    <field name="valid_till"/>
                    <field name="no_of_dependents" />
                    <field name="coverage_type"/>
                    <field name="insurance_doc" filename="file_name_insurance" widget="binary"/>
                    <field name="file_name_insurance" invisible="1"/>
                    <field name="document_bool" invisible='1'/>
                    <button name="action_upload_doc" type="object" string="Upload Document" class="btn-primary" attrs="{'invisible': [('document_bool','=',False)]}"/>
                </tree>
            </field>
        </record>


        <!-- payroll_ghi_details_report search view -->
        <record id="payroll_ghi_details_report_view_search" model="ir.ui.view">
            <field name="name">payroll_ghi_details_report.view.search</field>
            <field name="model">payroll_ghi_details_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="insurance_year" />
                    <field name="period_from"/>
                    <field name="period_to"/>
                    <field name="employee_code" />
                    <field name="employee_id" />
                    <field name="emp_status"/>
                    <field name="department_id" />
                    <field name="job_branch_id" />
                    <field name="payroll_status" />
                    <field name="joining_date" />
                    <field name="date_of_employee_id_creation" />
                    <field name="last_working_day" />
                    <field name="gender" />
                    <field name="dob" />
                    <field name="status" string='Health Insurance status'/>
                    <field name="valid_till"/>
                    <field name="no_of_dependents" />
                    <field name="coverage_type"/>
                    <!-- <filter string="Emp Status Inactive" name="emp_status_inactive" domain="[('emp_status','=','Inactive')]"/> -->
                    <filter string="Emp Status Active" name="emp_status_active" domain="[('emp_status','=','Active')]"/>
                    <filter string="EOS Applied Emp" name="emp_status_ae" domain="[('emp_status','=','Applied EOS')]"/>

                    <filter string="Payroll Status Yes" name="payroll_status_yes" domain="[('payroll_status','=','yes')]"/>
                    <filter string="Payroll Status No" name="payroll_status_no" domain="[('payroll_status','=','no')]"/>

                    <filter string="Male" name="get_gender_male" domain="[('gender','=','male')]"/>
                    <filter string="Female" name="get_gender_female" domain="[('gender','=','female')]"/>

                    <filter string="GHI" name="get_status_ghi" domain="[('status','=','GHI')]"/>
                    <filter string="ESI" name="get_status_esi" domain="[('status','=','ESI')]"/>
                    <filter string="Stipend" name="get_status_stipend" domain="[('status','=','Stipend')]"/>
                    <filter string="Personal Insurance" name="get_status_pi" domain="[('status','=','Personal Insurance')]"/>
                    <filter string="International-Insurance" name="get_status_ii" domain="[('status','=','International-Insurance')]"/>

                    <filter string="Self Coverage type" name="get_coverage_type1" domain="[('coverage_type','=','Self')]"/>
                    <filter string="Dependent Coverage type" name="get_coverage_type2" domain="[('coverage_type','=','Dependent')]"/>

                    
                    
                </search>
            </field>
        </record>


    </data>
</odoo>