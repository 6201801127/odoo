<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
		<record id="id_daily_esi_scheduler" model="ir.cron">
			<field name="name">Payroll ESI Scheduler</field>
			<field name="model_id" ref="model_hr_employee"/>
			<field name="state">code</field>
			<field name="code">model.daily_esi_scheduler()</field>
			<field name="user_id" ref="base.user_root"/>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
            <!-- <field name="nextcall" eval="(DateTime.now() + timedelta(days=7)).strftime('%Y-%m-%d 03:00:00')" />  -->
			<field name="numbercall">-1</field>
			<field name="doall" eval="False"/>
			<field name="priority">1</field>
			<field name="active" eval="True" />
		</record>
		<record id="possible_esi_expire_scheduler_cron" model="ir.cron">
			<field name="name">Forcast Payroll ESIEnd Scheduler</field>
			<field name="model_id" ref="model_hr_employee"/>
			<field name="state">code</field>
			<field name="code">model.possible_esi_expire_scheduler()</field>
			<field name="user_id" ref="base.user_root"/>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
            <!-- <field name="nextcall" eval="(DateTime.now() + timedelta(days=7)).strftime('%Y-%m-%d 03:00:00')" />  -->
			<field name="numbercall">-1</field>
			<field name="doall" eval="False"/>
			<field name="priority">1</field>
			<field name="active" eval="False" />
		</record>
		
		<record id="send_personal_insurance_expired_cron" model="ir.cron">
			<field name="name">Personal Insurance Expired Scheduler</field>
			<field name="model_id" ref="model_hr_employee"/>
			<field name="state">code</field>
			<field name="code">model.send_personal_insurance_expired_mail()</field>
			<field name="user_id" ref="base.user_root"/>
			<field name="interval_number">15</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False"/>
			<field name="priority">1</field>
			<field name="active" eval="False" />
		</record>
	</data>
</odoo>