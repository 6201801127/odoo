<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="payroll_inherit.hr_salary_rule_cbonus" model="hr.salary.rule">
            <field name="code">LTC</field>
            <field name="name">LTC</field>
            <field name="category_id" ref="payroll_inherit.FIXBONUS"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].calculate_fixed_allowance(payslip.id,contract.ltc,contract.employee_id.gender,payslip.employee_id,payslip.date_to.year,payslip.date_to.month,'LTC',payslip.date_to)</field>
            <field name="sequence" eval="5"/>
            <field name="condition_select">none</field>
        </record>
        <record id="payroll_inherit.hr_salary_rule_cbonus" model="hr.salary.rule">
            <field name="code">PP</field>
            <field name="name">Prof Pursuit</field>
            <field name="category_id" ref="payroll_inherit.FIXBONUS"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].calculate_fixed_allowance(payslip.id,contract.prof_persuit,contract.employee_id.gender,payslip.employee_id,payslip.date_to.year,payslip.date_to.month,'PP',payslip.date_to)</field>
            <field name="sequence" eval="5"/>
            <field name="condition_select">none</field>
        </record>
        <record id="payroll_inherit.hr_salary_rule_nps" model="hr.salary.rule">
            <field name="code">NPS</field>
            <field name="name">NPS</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].calculate_nps(payslip.id,contract.is_nps,contract.contribution,payslip.employee_id,payslip.date_to.year,payslip.date_to.month,categories.BASIC,contract.pran_no)</field>
            <field name="sequence" eval="225"/>
            <field name="condition_select">none</field>
        </record>
        
    </data>
</odoo>