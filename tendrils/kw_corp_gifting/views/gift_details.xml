<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>      
		<record id="kw_corporate_gifting_guest_line_tree" model="ir.ui.view">
			<field name="name">Corporate Gifting Line Tree</field>
			<field name="model">kw_corporate_gifting_guest_line</field>
			<field name="arch" type="xml">
				<tree editable="top">
					<field name="occasion_id" string="Occasion" options="{'no_open': True,'no_create':True,'no_edit':True}" invisible="1"/>
					<field name="year" invisible="1"/>
					<field name="sbu" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="guest_id" string="Guest" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="gift_details" options="{'no_open': True,'no_create':True,'no_edit':True}" string="Gift"/>
					<field name="designation" force_save="1"/>
					<field name="organisation" force_save="1"/>
					<field name="address" force_save="1"/>
					<field name="tel" force_save="1"/>
					<field name="state_id" force_save="1"/>
					<field name="delivery_at"/>
					<field name="location"/>
					<field name="category" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="tag" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="delivered_by" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="created_on" invisible="1"/>
				</tree>
			</field>
		</record>

    <record id="kw_corporate_gifting_guest_line_search" model="ir.ui.view">
        <field name="name">kw_corporate_gifting_guest_line.search</field>
        <field name="model">kw_corporate_gifting_guest_line</field>
        <field name="arch" type="xml">
            <search>
            	<field name="gift_details"/>
            	<field name="tel"/>
            	<field name="organisation"/>
                <field name="sbu" string="SBU" />
                <field name="delivered_by" string="Delivery Boy" />
                <field name="tag" string="Tag" />
                <field name="category" string="Category"/>
                <field name="location" string="Location"/>
                <field name="designation" string="Designation"/>
                <field name="occasion_id" string="Occation"/>
                <field name="year" string="Year"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_occasion_id" string="Occasions" context="{'group_by':'occasion_id'}"/>
                </group>
            </search>
        </field>
    </record>
		<record id="kw_corporate_gifting_guest_line_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Corporate Gifting</field>
			<field name="res_model">kw_corporate_gifting_guest_line</field>
			<field name="search_view_id" ref="kw_corporate_gifting_guest_line_search"/>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
		</record>

		<menuitem name="Corporate Gifting" parent="menu_corporate_gifting" id="gifting_detail_line_menu" action="kw_corporate_gifting_guest_line_action" sequence="100"/>
	</data>
</odoo>
