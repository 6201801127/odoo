<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_kw_kt">
            <field name="name">Knowledge Transfer</field>
            <field name="description">Groups for KT module ...</field>
        </record>
        <record id="group_kt_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="kw_kt.module_kw_kt"/>
        </record>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('base.group_user')),(4,ref('kw_kt.group_kt_user'))]"/>
        </record>
        <record id="group_kt_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_kt.module_kw_kt"/>
            <field name="implied_ids" eval="[(4, ref('group_kt_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
        </record>
   
        <record id="group_kt_view_ra_rule" model="ir.rule">
            <field name="name">Kt hr RA Group</field>
            <field name="model_id" ref="model_kw_kt_view"/>
            <field name="domain_force">[('applicant_id.parent_id.user_id','=',user.id)]</field>
            <field name="perm_read" eval="True"/>
             <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('kw_employee.group_hr_ra'))]"/>
        </record>

        <record id="group_kt_type_master_manager_rule" model="ir.rule">
            <field name="name">Kt Type Master Manager Group</field>
            <field name="model_id" ref="model_kw_kt_type_master"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_kt_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record model="ir.rule" id="group_kt_type_master_user_rule">
            <field name="name">Kt Type Master User Group</field>
            <field name="model_id" ref="model_kw_kt_type_master"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_kt_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record> 

        <record id="group_kt_view_manager_rule" model="ir.rule">
            <field name="name">Kt View Manager Group</field>
            <field name="model_id" ref="model_kw_kt_view"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_kt_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="group_kt_view_user_ir_rule" model="ir.rule">
            <field name="name">Kt View user Group</field>
            <field name="model_id" ref="model_kw_kt_view"/>
            <field name="domain_force">[('applicant_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('kw_kt.group_kt_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
