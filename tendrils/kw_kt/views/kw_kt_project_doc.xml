<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kt_doc_child_form_view" model="ir.ui.view">
            <field name="name">KT Document Form</field>
            <field name="model">kw_kt_project_doc</field>
            <field name="priority">21</field>
            <field name="arch" type="xml">
                <form string="KT Document form">
                    <sheet>
                        <group>
                            <group>
                                <field name="document_attach" widget="binary" filename="doc_file_name" required='1'/>
                                <label for='document_attach' attrs="{'invisible':[('id','>', 0)]}" style='font-weight: normal;' class='text-danger' string='(Only .jpeg, .jpg and .png format are allowed with maximum size 4mb.)'/>
                                <field name="doc_file_name" invisible="1"/>
                                <field name="details" />
                                <field name="project_id"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kt_doc_child_view_tree" model="ir.ui.view">
            <field name="name">KT Document Tree</field>
            <field name="model">kw_kt_project_doc</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="document_attach" widget="binary" filename="doc_file_name" />
                    <field name="doc_file_name" invisible="1"/>
                    <field name="details" />
                    <field name="project_id"/>
                </tree>
            </field>
        </record>
        <!-- Retirement apply action window -->
        <record id="kt_doc_child_action" model="ir.actions.act_window">
            <field name="name">KT Document</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_kt_project_doc</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('kt_doc_child_view_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('kt_doc_child_form_view')})]"/>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available.
                </p>
            </field>
        </record>
        <!-- Take action -->
    </data>
</odoo>