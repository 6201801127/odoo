<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Form view for ra approve remark -->
        <record id="view_kw_ra_approve_remark_form" model="ir.ui.view">
            <field name="name">Approval Remark</field>
            <field name="model">kw_kt_view</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="89"/>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                            $(".modal-title").show();
                            $(".o_form_statusbar").hide();
                        });
                    </script>
                    <div class="row">
                        <div class="text-left col-sm-12 col-sm-offset-4 mx-auto">
                            <!-- <p class="h3 font-weight-light text-left text-justify"> Remarks
                            </p> -->
                            <field name="remark" required="1"/>
                            <button type="object" name="action_remark_approve" class="text-center btn btn-success">Submit</button>
                            <button string="Cancel" class="btn-secondary text-center btn btn-danger" special="cancel" style="margin-left:7px;"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

      

