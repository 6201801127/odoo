<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_kt_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.zoom</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="KT Settings" string="KT Settings" data-key="kw_kt"
                     groups="hr.group_hr_manager,base.group_no_one">
                    <h2>KT Configuration Parameters</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="CC in Mail" id="cc_kt_mail">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="notify_kt_cc" string="CC Notify" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="notify_kt_cc" widget="many2many_tags" options="{'no_edit': True, 'no_open': True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="kw_kt_config_settings_action_window" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_kt_view'}</field>
    </record>
</odoo>