<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kw_emp_profile_change_request_email_template" model="mail.template">
            <field name="name">Profile Change Email</field>
            <field name="email_from">${ctx['from_mail']}</field>
            <field name="subject">Profile Change Request | ${object.name} (${object.employee_code})</field>
            <field name="email_to">${ctx['email']}</field>
            <field name="model_id" ref="kw_emp_profile.model_kw_emp_profile_new_data"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['by']},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        ${object.name} (${object.employee_code}) has submitted a request to approve his/her details in Profile page.
                                             
                                    </p>
                                </div>
                                <div style="margin-left: 0.7rem;margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 8px;">
                                    <p>To take action, please log into Tendrils.</p>
                                </div>
                                <br/>
                                <br/>

                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>

        <record id="kw_emp_profile_cv_change_request_email_template" model="mail.template">
            <field name="name">Profile CV Change Email</field>
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="subject">CV updation Request | ${object.name} (${object.employee_code}) | Submitted</field>
            <field name="email_to">${ctx['email']}</field>
            <field name="model_id" ref="kw_emp_profile.model_kw_emp_cv_profile"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${ctx['by']},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                      ${object.name} (${object.employee_code}) has submitted a request to approve his/her CV in Profile page.

                                    </p>
                                </div>
                                <div style="margin-left: 0.7rem;margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 8px;">
                                    <p>To take action, please log into Tendrils.</p>
                                </div>
                                <br/>
                                <br/>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>