<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- IT, admin status  mail-->
        <record id="kw_emp_profile_approve_request_email_template" model="mail.template">
            <field name="name">Profile Approval Email</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="subject">Profile Changes Approved | ${object.name}</field>
            <field name="email_to">${ctx['email']}</field>
            <field name="model_id" ref="kw_emp_profile.model_kw_emp_profile_new_data"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;"> 
                                    <h5 style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Hello</small> ${object.name},</h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">This is to inform you that your profile change request has been approved by ${ctx['action_taken_by']} on ${format_tz(object.write_date, format='%d-%b-%Y')}. 
                                    </p>
                                    <br/>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.
                                    </p>
                                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;"/>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>

        <record id="kw_emp_profile_cv_approve_request_email_template" model="mail.template">
            <field name="name">Profile CV Approval Email</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="subject">CV updation Request | ${object.name}| Approved</field>
            <field name="email_to">${ctx['email']}</field>
            <field name="model_id" ref="kw_emp_profile.model_kw_emp_cv_profile"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;"> 
                                    <h5 style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Hello</small> ${object.name},</h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">This is to inform you that your profile changes request has been approved by ${ctx['action_taken_by']} on ${format_tz(object.write_date, format='%d-%b-%Y')}. 
                                    </p>
                                    <br/>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.
                                    </p>
                                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;"/>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>