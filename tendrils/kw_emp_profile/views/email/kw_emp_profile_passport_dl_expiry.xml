<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      
        <record id="kw_emp_profile_passport_dl_expiry_email_template" model="mail.template">
            <field name="name">Document Expiry Email</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Profile Document Expiry From: ${object.emp_id.name}</field>
            <field name="email_to">${object.emp_id.work_email}</field> 
            <field name="model_id" ref="kw_emp_profile.model_kw_emp_profile"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Dear ${object.emp_id.name}
                                        </span>
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       We request you to renew your ${ctx['doc_name']}. It is going to be expiry on ${ctx['expiry_date']}.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>