<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_employee_profile_educational_form_view">
            <field name="name">kw_emp_profile_Educational.view</field>
            <field name="model">kw_emp_profile</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <form create="false" delete="0">
                    <script>
                        $(document).ready(function(){
                        $(".modal-title").show();
                        });
                    </script>
                    <sheet>
                        <field name="educational_sts" invisible="1"/>
                        <group string="Educational Qualification">
                            <field name="educational_details_ids" attrs="{'readonly':[('educational_sts','=',True)]}">
                                <form>
                                    <script>
                                        $(document).ready(function(){
                                        $(".modal-title").show();
                                        });
                                    </script>
                                    <group string="Educational Details">
                                        <group>
                                            <field name="course_type"/>
                                            <field name="course_id"
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="stream_id"
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="university_name"
                                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                            <field name="passing_details"/>
                                        </group>
                                        <group>
                                            <field name="passing_year"/>
                                            <field name="division"/>
                                            <field name="marks_obtained"/>
                                            <field name="uploaded_doc"/>
                                            <p>(Only .jpeg,.png, .pdf format are allowed.Maximum file size is 4
                                                MB) *
                                            </p>
                                        </group>
                                    </group>
                                </form>
                                <tree>
                                    <field name="course_type"/>
                                    <field name="course_id"/>
                                    <field name="university_name"/>
                                    <field name="stream_id"/>
                                    <field name="passing_year"/>
                                    <field name="passing_details" widget="many2many_tags"/>
                                    <field name="division"/>
                                    <field name="marks_obtained"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_employee_update_educational_action_window" model="ir.actions.act_window">
            <field name="name">Educational Update</field>
            <field name="res_model">kw_emp_profile</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_employee_profile_educational_form_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Data Found.
                </p>
            </field>
        </record>
    </data>
</odoo>    