<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- kw_emp_profile_cv_info tree view -->
    <record id="kw_emp_profile_cv_info_view_tree" model="ir.ui.view">
        <field name="name">kw_emp_profile_cv_info.view.tree</field>
        <field name="model">kw_emp_profile_cv_info</field>
        <field name="arch" type="xml">
            <tree class="mif-table" delete='0' create='0' edit='0'>
                <!-- Add your fields here -->
                <field name="project_of"  class="center-val"/>
                <field name="compute_project" string='Project Name' class="center-val"/>
                <field name="location"  class="center-val"/>
                <field name="start_month_year"  class="center-val"/>
                <field name="end_month_year"  class="center-val"/>
                <!-- <field name="project_feature"  class="center-val"/> -->
                <!-- <field name="responsibility_activity"  class="center-val" widget="dynamic_popover_text"/> -->
                <field name="project_feature_text"  class="center-val" widget="dynamic_popover_text"/>
                <field name="role"  class="center-val"/>
                <field name="responsibility_activity_text"  class="center-val" widget="dynamic_popover_text"/>
                <field name="write_date" string='Last Updated On'  class="center-val"/>
            </tree>
        </field>
    </record>
    <!-- kw_emp_profile_cv_info form view -->
    <record id="kw_emp_profile_cv_info_view_form" model="ir.ui.view">
        <field name="name">kw_emp_profile_cv_info.view.form</field>
        <field name="model">kw_emp_profile_cv_info</field>
        <field name="arch" type="xml">
            <form string="" delete='0' create='0' edit='0'>
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                         <group>
                             <field name="project_of" />
                             <field name="activity" attrs="{'invisible':[('project_of','=','others')]}"/>
                             <field name="other_activity"
                                    attrs="{'invisible':['|',('activity','=','project'),('project_of','=','others')]}"/>
                             <field name="emp_project_id"
                                    attrs="{'invisible':['|',('project_of','=','others'),('activity','=','others')]}"
                                    options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                             <field name="project_name"
                                    attrs="{'invisible':[('project_of','=','csm')]}"/>
                             <field name="location"/>
                             <field name="client_name"
                                    attrs="{'invisible':[('project_of','=','csm')]}"/>
                            <field name="organization_id"
                                    attrs="{'invisible':[('project_of','=','csm')]}"
                                    options="{'no_open': True}"/>
                            <field name="start_month_year"/>
                            <field name="end_month_year"/>
                         </group>
                         <group>
                             <field name="project_feature"/>
                             <field name="role"/>
                             <field name="responsibility_activity"/>
                         </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_kw_emp_cv_info_report_tree" model="ir.ui.view">
        <field name="name">kw.emp.cv.info.query.tree</field>
        <field name="model">kw_emp_cv_info_report</field>
        <field name="arch" type="xml">
            <tree string="Employee CV Information Query" create='false' delete='false' default_order='cv_count desc,name asc' >
                <field name="employee_id" invisible='1'/>
                <field name="cv_count" invisible='1'/>
                <field name="emp_code" string='Emp. Code'/>
                <field name="name" class='bold_string'/>
                <field name="job_id" class='Designation'/>
                <field name="department_id" />
                <field name="division" />
                <field name="sbu_master_id" string='SBU' />
                <field name="parent_id" string='Reporting Authority'/>
                <field name="cv_info" string='CV Info' />
                <field name="pending_at"/>
                <button name="action_show_cv" type="object" string="View"  class="oe_highlight" attrs="{'invisible':[('cv_count','=',0)]}"/>
            </tree>
        </field>
    </record>


    <record id="action_kw_emp_cv_info_report" model="ir.actions.act_window">
        <field name="name">View Employee CV Information</field>
        <field name="res_model">kw_emp_cv_info_report</field>
        <field name="view_mode">tree</field>
    </record>
    
    <!-- menu given only for demo purpose -->

    <menuitem id="menu_kw_emp_cv_info_report" name="View"
              parent="employee_profile_cv_root_menu"
              sequence="3"
              action="action_kw_emp_cv_info_report"/>

     
</odoo>
