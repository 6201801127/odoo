<odoo>
    <data>
        <!--view organisation_committee -->
        <record id="view_organisation_committee_tree_view" model="ir.ui.view">
            <field name="name">organisation committee</field>
            <field name="model">organisation_committee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="chairperson" widget="many2many_tags"/>
                    <field name="mom_controller" widget="many2many_tags"/>
                    <field name="coordinator" widget="many2many_tags"/>
                    <field name="member" widget="many2many_tags"/>
                    <field name="members" invisible="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                </tree>
            </field>
        </record>

        <!-- search view -->
        <record id="view_organisation_committee_search" model="ir.ui.view">
            <field name="name">organisation_committee_search</field>
            <field name="model">organisation_committee</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Define search fields -->
                    <field name="name" string="Committee Name"/>
                    <field name="members" string="Committee Members"/>
                </search>
            </field>
        </record>

        <record id="view_organisation_committee_form_view" model="ir.ui.view">
            <field name="name">organisation_committee</field>
            <field name="model">organisation_committee</field>
            <field name="arch" type="xml">
                <form duplicate='0'>
                    <sheet>
                        <group>
                            <field name="name" style="width: 40%;"/>

                            <field name="members" options="{'no_open': True,'no_create':True,'no_edit':True}">
                                <tree editable="bottom" default_order="employee_id asc">
                                    <field name="employee_id"
                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="emp_code" string="Employee Code"/>
                                    <field name="job_id" string="Job Position"
                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="department_id" string="Department"
                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="job_branch_id" string="Job Branch"
                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="is_chairperson"/>
                                    <field name="is_mom_controller"/>
                                    <field name="is_coordinator"/>
                                    <field name="is_member"/>

                                </tree>
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="is_chairperson"/>
                                        <field name="is_mom_controller"/>
                                        <field name="is_coordinator"/>
                                        <field name="is_member"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  action-->
        <record id="action_organisation_committee" model="ir.actions.act_window">
            <field name="name">Organisation Committee</field>
            <field name="res_model">organisation_committee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'delete':False}</field>
        </record>


        <!-- Wizard view -->
        <record id="view_my_wizard_form" model="ir.ui.view">
            <field name="name">Committee Wizard</field>
            <field name="model">committee_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_ids" options="{'no_open': True,'no_create':True,'no_edit':True}">
                                <tree>
                                    <field name="name"/>
                                    <field name="emp_code"/>
                                    <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    <field name="job_branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="emp_code"/>
                                        <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="job_branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </group>
                                </form>
                            </field>
                            <field name="committee_ids" widget="many2many_tags"
                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <field name="test_css" invisible="1"/>
                        </group>
                    </sheet>
                    <!-- <button name="action_cancel" string="Cancel" type="object" class="btn btn-secondary"/> -->

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="community_wizard_search">
            <field name="name">committee_wizard_search</field>
            <field name="model">committee_wizard</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_ids">
                        <field name="job_branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    </field>
                </search>
            </field>
        </record>

        <!-- Wizard action -->
        <record id="action_my_wizard" model="ir.actions.act_window">
            <field name="name">Add Members to Committee Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">committee_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu item  -->
        <menuitem id="menu_organisation_committee"
                  name="Organisation Committee"
                  parent="employee_profile_root_menu"
                  sequence="2"
                  action="action_organisation_committee"/>

        <menuitem id="menu_my_wizard"
                  name="Committee Wizard"
                  parent="employee_profile_root_menu"
                  sequence="3"
                  action="action_my_wizard"/>


    </data>
</odoo>
