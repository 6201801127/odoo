<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="res_config_settings_view_emp_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.kw_emp_profile</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="72"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="employee_pan_check"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="employee_pan_check"/>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

    <record id="hr_config_settings_emp_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hr.employee'}</field>
    </record>

</odoo>
