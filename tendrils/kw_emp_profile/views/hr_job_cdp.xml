<odoo>
    <data>
        <!--view for hr_job_cdp -->
        <record id="view_hr_job_cdp_tree_view" model="ir.ui.view">
            <field name="name">hr_job_cdp_tree</field>
            <field name="model">hr_job_cdp_model</field>
            <field name="arch" type="xml">
                <tree editable="bottom" edit="true">
                    <field name="sequence"/>
                    <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                           force_save="1"/>
                    <field name="department"/>
                    <field name="name" invisible="1"/>
                    <field name="level"/>
                    <field name="grade"/>
                    <field name="designation"/>
                    <field name="years"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_job_cdp_form_view" model="ir.ui.view">
            <field name="name">hr_job_cdp_form</field>
            <field name="model">hr_job_cdp_model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="sequence"/>
                            <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                   force_save="1"/>
                            <field name="department"/>
                            <field name="name" invisible=""/>
                            <field name="level"/>
                            <field name="grade"/>
                            <field name="designation"/>
                            <field name="years"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="cdp_matrix_search">
            <field name="name">cdp_matrix_search</field>
            <field name="model">hr_job_cdp_model</field>
            <field name="arch" type="xml">
                <search>
                    <field name="sequence"/>
                    <field name="category_id"/>
                    <field name="name"/>
                    <field name="department"/>
                    <field name="level"/>
                    <field name="grade"/>
                    <field name="designation"/>
                    <field name="years"/>
                    <group expand='0' string="Group By">
                        <filter string="By Name" name="By Name" domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--  action-->
        <record id="action_hr_job_cdp_matrix_window" model="ir.actions.act_window">
            <field name="name">CDP Matrix</field>
            <field name="res_model">hr_job_cdp_model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!--            <field name="context">{'delete':False}</field>-->
        </record>

        <menuitem id="menu_hr_job_cdp_matrixx"
                  name="CDP Matrix"
                  parent="kw_employee.kwemp_organisation_submenu"
                  sequence="2"
                  action="action_hr_job_cdp_matrix_window"/>

    </data>
</odoo>
