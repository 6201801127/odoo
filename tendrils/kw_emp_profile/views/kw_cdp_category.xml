<odoo>
    <data>
        <!--view for hr_job_cdp -->
        <record id="view_hr_job_cdp_category_tree_view" model="ir.ui.view">
            <field name="name">hr_job_cdp_category</field>
            <field name="model">hr_job_cdp_category_master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="designations" options="{'no_create': True, 'no_edit':True, 'no_open':True}"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_job_cdp_category_form_view" model="ir.ui.view">
            <field name="name">hr_job_cdp_category</field>
            <field name="model">hr_job_cdp_category_master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="designations" widget="many2many_tags"
                                   options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  action-->
        <record id="action_cdp_category_master" model="ir.actions.act_window">
            <field name="name">CDP Category</field>
            <field name="res_model">hr_job_cdp_category_master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="context">{'delete':False}</field>-->
        </record>

        <menuitem id="menu_hr_job_cdp_category_master"
                  name="CDP Category Master"
                  parent="kw_employee.kwemp_organisation_submenu"
                  sequence="2"
                  action="action_cdp_category_master"/>

    </data>
</odoo>
