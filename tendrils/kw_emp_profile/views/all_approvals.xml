<odoo>
    <data>
        <record id="emp_profile_action_confirm_view" model="ir.ui.view">
            <field name="name">Employee Profile Approval</field>
            <field name="model">employee.profile.action.approve</field>
            <field name="arch" type="xml">
                <form string="Approve">

                    <group>
                        <field name="employee_ids">
                            <tree string="Employee Profile Details" create='false' delete='false' edit='false'>
                                <field name="name"/>
                                <field name="emp_code"/>
                                <field name="job_id" string="Designation"/>
                                <field name="department_id"/>
                            </tree>
                        </field>
                    </group>
                    <p class="oe_grey">
                        <ul>
                            <li>Approve Button will approve all requests</li>
                            <li>Reject Button wil reject all requests</li>
                        </ul>
                    </p>
                    <footer>
                        <button string="Approve" name="profile_requests_action_button" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Reject" name="profile_requests_action_reject_button" type="object"
                                default_focus="1" class="btn-danger"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_profile_request_action_confirm"
                    multi="True"
                    key2="client_action_multi" name="Approve/Reject"
                    res_model="employee.profile.action.approve" src_model="kw_emp_profile_new_data"
                    view_mode="form" target="new" view_type="form"
                    groups="kw_emp_profile.group_kw_emp_profile_manager"/>
    </data>
</odoo>