<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="UserMenu.Actions">
        <t t-jquery="a[data-menu='shortcuts']" t-operation="replace">

        </t>
        <t t-jquery="a[data-menu='logout']" t-operation="before">
            <a role="menuitem" href="#" data-menu="shortcuts" class="dropdown-item d-none d-md-inline-block">Shortcuts</a>
        </t>
        <t t-jquery="a[data-menu='settings']" t-operation="replace">

        </t>
        <t t-jquery="a[data-menu='shortcuts']" t-operation="before">
            <a role="menuitem" href="#" data-menu="manual" class="dropdown-item user_class"> My Profile</a>
            <a role="menuitem" href="#" data-menu="job_role" class="dropdown-item job_role_class"> My Job Role</a>
            <a role="menuitem" href="#" data-menu="settings" class="dropdown-item">Preferences</a>
            <div role="separator" class="dropdown-divider"/>
        </t>
    </t>

    <div t-name="kw_emp_profile.job_role">
        <div class="container-fluid">
            <div class="row">
                <div class="offset-md-0 col-md-12">
                    <table class="table table-border">

                        <tbody>
                            <tr>
                                <td align="left" class="font-weight-bold col-sm-2 border-right">Name</td>
                                <td class="col-sm-10">
                                    <t t-esc="res.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" class="font-weight-bold border-right">Designation</td>
                                <td>
                                    <t t-esc="res.designation"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" class="font-weight-bold border-right">Reporting Authority</td>
                                <td>
                                    <t t-esc="res.ra"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" class="font-weight-bold border-right">Subordinates</td>
                                <td>
                                    <t t-raw="res.team"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" class="font-weight-bold border-right">Job Role</td>
                                <td>
                                    <t t-raw="res.jd"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" class="font-weight-bold border-right">Autonomy/Authority</td>
                                <td>
                                    <t t-raw="res.autonomy"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</templates>
