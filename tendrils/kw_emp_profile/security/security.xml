<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_kw_emp_profile">
            <field name="name">Employee Profile</field>
            <field name="description">User access level for Employee Profile</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_kw_emp_profile_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_emp_profile.module_category_kw_emp_profile"/>
        </record>

        <record id="group_kw_emp_profile_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="kw_emp_profile.module_category_kw_emp_profile"/>
        </record>

        <record id="group_profile_user_rule" model="ir.rule">
            <field name="name">User View Rule</field>
            <field name="model_id" ref="model_kw_emp_profile"/>
            <field name="domain_force">['|',('emp_id.user_id','=',user.id),('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('kw_emp_profile.group_kw_emp_profile_user'))]"/>
        </record>

        <record id="group_profile_manager_rule" model="ir.rule">
            <field name="name">manager View Rule</field>
            <field name="model_id" ref="model_kw_emp_profile"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('kw_emp_profile.group_kw_emp_profile_manager'))]"/>
        </record>

    </data>
</odoo>