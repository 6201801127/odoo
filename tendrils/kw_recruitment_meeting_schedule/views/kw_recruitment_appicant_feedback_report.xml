<?xml version="1.0"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="kw_recruitment_appicant_feedback_report_tree" model="ir.ui.view">
            <field name="name">kw_recruitment_appicant_feedback_report.tree</field>
            <field name="model">kw_recruitment_appicant_feedback_report</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <tree string="Applicant Feedback Report" create="false" delete="false" import="false">
                    <field name="applicant_id" />
                    <field name="position_id" />
                    <field name="interview_date" />
                    <field name="panel_ids" />
                    <field name="score" />
                    <field name="remark" />
                    <button name="send_feedback" string="Send" class="btn btn-success"/>
                    <button name="dontsend_feedback" string="Do Not Send" class="btn btn-danger"/>
                </tree>
            </field>
        </record>
        <!-- action window -->
        <record id="action_applicant_feedback" model="ir.actions.act_window">
		  <field name="name">Applicant Feedback Report</field>
		  <field name="res_model">kw_recruitment_appicant_feedback_report</field>
		  <field name="view_mode">tree</field>
		  <field name="context">{}</field>
		  <field name="domain">[]</field>
		  <field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_recruitment_appicant_feedback_report_tree')})]"/>
	    </record>
<!--        <menuitem parent="hr_recruitment.report_hr_recruitment" id="applicant_feedback_menu"-->
<!--                  name="Applicant Feedback Report"-->
<!--                  action="action_applicant_feedback"/>-->
    </data>
</odoo>