<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_applicant" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.recr.meeting</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='recruitment_process_div']" position="after">
                
                    <h2>Applicant Message</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_whatsapp"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_whatsapp"/>
                            </div>
                        </div>
                        <!-- <div class="col-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_sms"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_sms"/>
                            </div>
                        </div> -->
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_sync_logging"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_sync_logging"/>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>
