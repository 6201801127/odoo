<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="interview_meeting_feedback_list_view" model="ir.ui.view">
		<field name="name">survey_user_input_feedback_tree_view</field>
		<field name="model">survey.user_input</field>
		<field name="mode">primary</field>
		<field name="arch" type="xml">
			<tree string="Interview feedback tree" create="false" edit="false" delete="false">
				<field name="id" invisible="1"/>
                <field name="applicant_id" invisible="0" string="Applicant"/>
                <field name="survey_id" invisible="1"/>
                <field name="partner_id" string="Interviewer"/>
                <field name="create_date" string="Date" invisible="1"/>
                <field name="score" string="Score"/>
                <field name="remark" string="Remark"/>
                <field name="current_user" invisible="1"/>
                <field name="state" invisible="1"/>
                <field name="type" invisible="1"/>
                <button name="view_cv" type="object" string="View CV" class="oe_highlight" invisible="0"/>
                <button name="view_feedback" type="object" string="View Feedback" class="oe_highlight" attrs="{'invisible':[('state','=','new')]}"/>
                <button name="give_feedback" type="object" string="Submit Feedback" class="oe_highlight" attrs="{'invisible':[('state','!=','new')]}"/>
                <button name="print_feedback" type="object" string="PDF" attrs="{'invisible':[('state','=','new')]}" class="oe_highlight"/>
			</tree>
		</field>
	</record>

        <record model="ir.actions.act_window" id="meeting_feedback_action">
            <field name="name">Meeting Feedbacks</field>
            <field name="res_model">survey.user_input</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('interview_meeting_feedback_list_view')})]"/>
            <!-- <field name="context">{}</field> -->
            <field name="help" type="html">
              <p class="o_view_nocontent_empty_folder">
                No Feedback yet
              </p>
            </field>
        </record>    

        <!-- <menuitem name="Meeting Feedback"
                id="kw_meeting_schedule_all_feedback_menu"
                action="kw_recruitment_meeting_schedule.meeting_feedback_action"
                sequence="999"
                parent="hr_recruitment.menu_hr_recruitment_root"/> -->
        

    </data>
    
</odoo>
