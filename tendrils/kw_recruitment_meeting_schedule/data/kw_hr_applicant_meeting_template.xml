<?xml version="1.0"?>
<odoo>

    <data>
        <record id="kw_applicant_intimatation_email_template_schedule" model="mail.template">
            <field name="name">Applicant: Meeting Acknowledgment</field>
            <field name="model_id" ref="kw_meeting_schedule.model_kw_meeting_events"/>
            <field name="subject">${ctx['subject']}</field>
            <field name="email_to" >${ctx['email_to']}</field>
            <field name="email_from">${ctx['emailfrom'] if ctx['emailfrom'] else object.user_id.email if object.user_id.email else ''}</field>
            <field name="email_cc">${ctx['emailfrom'] if ctx['emailfrom'] else object.user_id.email if object.user_id.email else ''}</field>
            <field name="reply_to">${ctx['emailfrom'] if ctx['emailfrom'] else object.user_id.email if object.user_id.email else ''}</field>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;">
                    <tr>
                        <td align="center">
                            <table border="0" cellspacing="0" cellpadding="0" style="max-width:800px;overflow-y: hidden;margin:auto;" width="600">
                                <tbody>
                                    <tr>
                                        <td>
                                            <img src="/kwantify_theme/static/img/bar-line.png" height="6px"
															width="380px" alt="border-image" style="margin: 10px 0px;"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top: 25px;">
                                            <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                                                <tr>
                                                    <td style="vertical-align:top;">
                                                        <div style="margin-left: 0.2rem;">
                                                        <h2 style="color:rgb(22, 123, 158);font-weight: 400;margin: 4px 0 0 0;font-size:32px;" >
                                                            %if object.survey_id.title == 'Interview Feedback_HR':
                                                                Meeting
                                                            %else:
                                                                Interview
                                                            %endif
                                                            Information
                                                        </h2>
                                                        </div>
                                                    </td>
                                                    <td width="200px">
                                                        <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                                                            <tr>
                                                                <td>
                                                                    <div style=" float: left;margin-left: 20px;">
                                                                      <img src="/kwantify_theme/static/img/tendrils_new.png" align="center" height="28px"
															            width="165px" alt="border-image" style="margin: 10px 0px;padding-top: 25px;"/>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                            <hr/>
                                        </td>      
                                    </tr>
                                    <tr>
                                        <td>
                                            <table border="0">
                                                <tr>
                                                    <td>
                                                        <div style="margin-left: 0.2rem;"> 
                                                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                                                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Hello</small>
                                                                ${ctx['applicantname']},
                                                            </h5>
                                                            <br/>
                                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                                                Please find below details for your reference and make yourself available for the
                                                                %if object.survey_id.title == 'Interview Feedback_HR':
                                                                    discussion.
                                                                %else:
                                                                    interview.
                                                                %endif
                                                            </p>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div style="margin:0 0px;padding:5px 0 0px 0;">
                                                <h2 style="font-size: 1.6rem;font-weight: unset;color: #444141;">
                                                    %if object.survey_id.title == 'Interview Feedback_HR':
                                                        Meeting Details
                                                    %else:
                                                        Interview Details
                                                    %endif
                                                </h2>
                                            </div>
                                            <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                                <tr>
                                                    <td style="height: 40px;width:200px;">Position</td>
                                                    <td style="color:#167b9e;height: 40px;">${ctx['jobposition']}</td>
                                                </tr>
                                                <tr>
                                                    <td style="height: 40px;">Date</td>
                                                    <td style="color:#167b9e;height: 40px;">
                                                        ${format_tz(object.kw_start_meeting_date, format='%d-%b-%Y')}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="height: 40px;">Time</td>
                                                    <td style="color:#167b9e;height: 40px;">
                                                        ${datetime.datetime.strptime(object.kw_start_meeting_time,"%H:%M:%S").strftime("%I:%M %p")}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="height: 40px;">Mode</td>
                                                    <td style="color:#167b9e;height: 40px;">
                                                        ${dict (object.fields_get (allfields = ['mode_of_interview']) ['mode_of_interview'] ['selection']) [object.mode_of_interview]}
                                                    </td>
                                                </tr>
                                                % if object.telephone:
                                                <tr>
                                                    <td style="height: 40px;">Phone</td>
                                                    <td style="color:#167b9e;height: 40px;">
                                                        ${object.telephone}
                                                    </td>
                                                </tr>
                                                %endif

                                            % if object.recr_online_meeting:
                                            <tr>
                                                <td style="height: 40px;">
                                                    Meeting URL
                                                </td>
                                                <td style="color:#167b9e;height: 40px;">
                                                    % if object.recr_online_meeting == 'zoom':
                                                        <a href="${object.online_meeting_join_url}">
                                                            ${object.online_meeting_join_url}
                                                        </a>
                                                    % else:
                                                        <a href="${object.recr_other_meeting_url}">
                                                            ${object.recr_other_meeting_url}
                                                        </a>
                                                        
                                                    % endif
                                                </td>
                                            </tr>
                                            %endif
                                            % if object.location_id:
                                            <tr>
                                                <td style="height: 40px;">
                                                    Where
                                                </td>
                                                <td style="color:#167b9e;height: 40px;">
                                                    % if object.meeting_room_id:
                                                        ${object.meeting_room_id.name}
                                                        % if object.meeting_room_id.floor_name:
                                                            (${object.meeting_room_id.floor_name})
                                                        % endif
                                                    % else:
                                                        Virtual
                                                    % endif
                                                </td>
                                            </tr>
                                            %endif

                                            % if object.mpin:
                                            <tr>
                                                <td style="height: 40px;">
                                                    Mpin
                                                </td>
                                                <td style="color:#167b9e;height: 40px;">
                                                    ${object.mpin}
                                                </td>
                                            </tr>
                                            %endif
                                            % if object.survey_id.title != 'Interview Feedback_HR':
                                                <tr>
                                                    <td style="height: 40px;vertical-align: top;margin-top: 105px;">Job Profile</td>
                                                    <td style="color:#167b9e;height: 40px;">
                                                        ${ctx['candidateprofile'] | safe}
                                                    </td>
                                                </tr>
                                            %endif
                                            </table>

                                            <br/>
                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                                If you have queries, feel free to contact me at below mentioned contact numbers.
                                                For more info about our company, please visit our website.
                                            </p>

                                            <br/>
                                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                                With warm regards,
                                            </p>
                                            <br/>
											% if ctx['is_portal_user']:
						                      Recruitment Division, HR Dept.
						                      <br/>
											  CSM Technologies Pvt. Ltd.
						                    % elif object.user_id and object.user_id.signature:
						                      ${object.user_id.signature | safe}
						                    % else:
						                       CSM Technologies Pvt. Ltd.
						                    % endif
                                           
                                            <br/>
                                            <hr/>
                                            <p style="font-size: 0.8em;">
                                                The information contained in this e-mail message and/or attachments to
                                                it may contain confidential or privileged information. If you are not
                                                the intended recipient, any dissemination, use, review, distribution,
                                                printing or copying of the information contained in this email message
                                                and/or attachments to it are strictly prohibited. If you have received
                                                this communication in error, please notify us by reply e-mail or telephone
                                                and immediately and permanently delete the message and any attachments.
                                                Thank you.
                                            </p>
                    
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <table border="0" style="width: 100%;">
                                                <tr>
                                                    <td>
                                                        <div style="text-align: center;border-top: 1px solid rgb(230, 230, 230);padding-bottom: 20px;padding-top: 20px;line-height: 125%;font-size: 14px;margin: 20px 20px 0 20px;">
                                                            <p style="color: rgb(115, 115, 115);">
                                                                &copy; Copyright CSM Technologies, Level-6, OCAC Tower, Bhubaneswar, Odisha, India - 751013
                                                            </p>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div style="margin-left: 52%;width: 380px;">
                                                            <img src="/kwantify_theme/static/img/bar-line.png" height="6px"
															width="380px" alt="border-image" style="margin: 10px 0px;"/>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                            </table>
                        </td>
                    </tr>
                </table>
               
            ]]>
            </field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>
