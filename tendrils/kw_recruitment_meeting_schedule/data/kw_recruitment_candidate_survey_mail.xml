<?xml version="1.0"?>
<odoo>
    <data>
        <record id="candidate_survey_feedback_template_f2f" model="mail.template">
            <field name="name">Candidate feedback mail template f2f</field>
            <field name="model_id" ref="kw_recruitment_meeting_schedule.model_kw_interview_summary_report"/>
            <field name="subject">Interview Feedback</field>
            <field name="email_from">${object.env.user.employee_ids.work_email or ''}</field>
            <field name="email_to" >${object.applicant_id.email_from or ''}</field>
            <field name="email_cc" >hrd@csm.tech</field>
            <field name="reply_to"></field>            
            <field name="body_html" >
                  <![CDATA[


                <div style="margin-left: 1.2rem;">
                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;">
                        <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small> ${object.applicant_id.partner_name},
                    </h5>
                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                        Thank you for attending the interview for the <strong>${object.applicant_id.job_position.title}</strong>.
                        <br/>
                        We would like to learn about your Interview experience with our organization so that we can improvise our hiring process.
                        Please share your feedback below.
                    </p>
                </div>

                <div style="text-align: left; margin: 26px 0px 26px 1.2rem;">
                     <a href="${ctx['survey_url']}" target="_blank"
                        style="padding: 5px 10px; color: #FFFFFF; text-decoration: none; background-color: #3e8BFF; border: 1px solid #3e8BFF; border-radius: 3px">
                        Click here to Submit Feedback</a>
                </div>
                <div style="color: #676767;text-align: left; margin: 26px 0px 26px 1.2rem;">
                    % if object.env.user.employee_ids.user_id and object.env.user.employee_ids.user_id.signature:
                        <br/>
                        ${object.env.user.employee_ids.user_id.signature | safe}
                    % endif
                </div>


                ]]>  
            </field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>
