<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- salary advacne report -->
	<record id="recruitment_summary_report_view" model="ir.ui.view">
		<field name="name">Candidate Interview Report</field>
		<field name="model">kw_recruitment_summary_report_wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="date_from"/>
						<field name="date_to"/>
					</group>
				</group>
				<footer>
					<button name="search_recruitment_summery" string="View Reports" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="recruitment_summary_report_action" model="ir.actions.act_window">
		<field name="name">Candidate Interview Report</field>
		<field name="res_model">kw_recruitment_summary_report_wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="recruitment_summary_report_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records Found...
			</p>
		</field>
	</record>
	<menuitem parent="hr_recruitment.report_hr_recruitment" id="recruitment_summery_report_menu"
	          name="Candidate Interview Report"
	          action="recruitment_summary_report_action" sequence="99"/>

	<record id="recruitment_interview_summary_report_view" model="ir.ui.view">
		<field name="name">Interview Summery Report</field>
		<field name="model">kw_recruitment_interview_summary_report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="search_by" widget="radio" options="{'horizontal': true}"/>
						<field name="date_from"
						       attrs="{'invisible': [('search_by', 'in', ['applicant'])],'required':[('search_by', '=', 'dt')]}"/>
						<field name="date_to"
						       attrs="{'invisible': [('search_by', 'in', ['applicant'])],'required':[('search_by', '=', 'dt')]}"/>
						<field name="applicant_id"
						       attrs="{'invisible': [('search_by', 'in', ['dt'])],'required':[('search_by', '=', 'applicant')]}"
						       options="{'no_create': True,'no_open': True}"/>
					</group>
				</group>
				<footer>
					<button name="search_interview_summery" string="View Reports" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="recruitment_interview_summary_report_action" model="ir.actions.act_window">
		<field name="name">Interview Summery Report</field>
		<field name="res_model">kw_recruitment_interview_summary_report</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="recruitment_interview_summary_report_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records Found...
			</p>
		</field>
	</record>
	<!-- <menuitem parent="hr_recruitment.report_hr_recruitment" id="recruitment_interview_summary_menu" name="Interview Summary Report" action="recruitment_interview_summary_report_action"/> -->


	<record id="kw_recruitment_interview_summary_report_new_view" model="ir.ui.view">
		<field name="name">Interview Summery Report</field>
		<field name="model">kw_recruitment_interview_summary_report_new</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="search_by" widget="radio" options="{'horizontal': true}"/>
						<field name="date_from"
						       attrs="{'invisible': [('search_by', 'in', ['applicant','job'])],'required':[('search_by', '=', 'dt')]}"/>
						<field name="date_to"
						       attrs="{'invisible': [('search_by', 'in', ['applicant','job'])],'required':[('search_by', '=', 'dt')]}"/>
						<field name="applicant_id"
						       attrs="{'invisible': [('search_by', 'in', ['dt','job'])],'required':[('search_by', '=', 'applicant')]}"
						       options="{'no_create': True,'no_open': True}" widget="many2many_tags"/>
						<field name="job_id"
						       attrs="{'invisible': [('search_by', 'in', ['dt','applicant'])],'required':[('search_by', '=', 'job')]}"
						       options="{'no_create': True,'no_open': True}" widget="many2many_tags"/>
					</group>
				</group>
				<footer>
					<button name="view_report" string="View Reports" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="kw_recruitment_interview_summary_report_new_action" model="ir.actions.act_window">
		<field name="name">Interview Summery Report</field>
		<field name="res_model">kw_recruitment_interview_summary_report_new</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="kw_recruitment_interview_summary_report_new_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records Found...
			</p>
		</field>
	</record>
	<menuitem parent="hr_recruitment.report_hr_recruitment"
	          id="recruitment_interview_summary_new_menu"
	          name="Interview Summary Report"
	          action="kw_recruitment_interview_summary_report_new_action"/>
</odoo>

