<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate='0'>
    
		<record model="ir.module.category" id="module_category_claim">
			<field name="name">Claim</field>
	        <field name="description">User access level for this module</field>
	        <field name="sequence">99</field>
        </record>

        <record id="group_kw_claim_users" model="res.groups">
            <field name="name">Claim User</field>
            <field name="category_id" ref="claim.module_category_claim"/>
            <!-- <field name="users" eval="[(4, ref('base.group_user'))]"/> -->
        </record>

        <record id="group_claim_finance_officers" model="res.groups">
            <field name="name">Claim Finance</field>
            <field name="category_id" ref="claim.module_category_claim"/>
        </record>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('claim.group_kw_claim_users'))]"/>
        </record>
        <record id = "user_claim_report_rule" model = "ir.rule">
            <field name = "name">User claim report Rule</field>
            <field name = "model_id" ref = "model_claim_report" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_user'))]" />
            <field name = "domain_force"> [('employee_id','=',user.employee_ids.id)] </field>
        </record>

        <record id = "manager_claim_report_rule" model = "ir.rule">
            <field name = "name">Manager claim report rule</field>
            <field name = "model_id" ref = "model_claim_report" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_admin'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id = "user_claim_rule" model = "ir.rule">
            <field name = "name">User claim  Rule</field>
            <field name = "model_id" ref = "model_kw_claim" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_user'))]" />
            <field name = "domain_force"> [('employee_id','=',user.employee_ids.id)] </field>
        </record>

        <record id = "manager_claim_rule" model = "ir.rule">
            <field name = "name">Manager claim  rule</field>
            <field name = "model_id" ref = "model_kw_claim" />
            <field name = "groups" eval = "[(4, ref ('kw_advance_claim.group_kw_advance_claim_admin'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
	</data>
</odoo>