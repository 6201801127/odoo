<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_claim_cancel_reject_report" model="ir.ui.view">
            <field name="name">claim_cancel_reject_report_tree</field>
            <field name="model">claim_cancel_reject_report</field>
            <field name="arch" type="xml">
                <tree create = 'false' import = 'false' delete ='false'>
                    <field name="code"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="grade_id"/>
                    <field name="category_id"/>
                    <field name="sub_category_id"/>
                    <field name="currency_id"/>
                    <field name="amount"/>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="action_taken_by"/>
                    <button name="action_button_view_form"  type="object" string="View Form" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="claim_reject_report_search">
            <field name="name">claim_reject_report_search</field>
            <field name="model">claim_cancel_reject_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="employee_id"/>
                        <filter string="This Month" name="filter_current_month"
                        domain="[('month','=',context_today().strftime('%%Y-%%m'))]"/>
                    <filter string="This Year" name="filter_current_year" domain="[('year','=',context_today().year)]"/>
                    <group>
                        <filter name="group_by_employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--  action  -->
        <record id="action_claim_cancel_reject_report" model="ir.actions.act_window">
            <field name="name">Claim Reject Report</field>
            <field name="res_model">claim_cancel_reject_report</field>
            <field name="view_mode">tree</field>
            <!-- <field name="view_id" ref="claim.view_claim_cancel_reject_report"/> -->
        </record>

       
    </data>
</odoo>
