<odoo>
    <data>
        <record id="category_sub_category_report_tree_view" model="ir.ui.view">
            <field name="name">category_sub_category_report.view.tree</field>
            <field name="model">category_sub_category_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import = '0' >
                    <field name="employee_id" />
                    <field name="category_id" />
                    <field name="sub_category_ids" />
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="state" />
                    <field name="amount" />
                </tree>
            </field>
        </record>
        <record id="category_subcategory_view_search" model="ir.ui.view">
            <field name="name">category_subcategory.view.search</field>
            <field name="model">category_sub_category_report</field>
            <field name="arch" type="xml">
                <search string="Category and Sub-Category">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="amount"/>
                    <field name="state"/>
                    <field name="category_id"/>
                    <field name="sub_category_ids"/>
                    <separator/>
                    <filter string="This Month" name="filter_this_month" domain="[('month','=', datetime.datetime.now().month)]" />
                    <filter string="This Year" name="filter_this_year" domain="[('year','=', datetime.datetime.now().year)]" />
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Category" name="groupby_category" domain="[]" context="{'group_by':'category_id'}"/>
                        <filter string="Sub-Category" name="groupby_sub_category" domain="[]" context="{'group_by':'sub_category_ids'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>