<odoo>
    <data>
        <record id="approval_non_approval_report_tree_view" model="ir.ui.view">
            <field name="name">approval_non_approval_report.view.tree</field>
            <field name="model">approval_non_approval_report</field>
            <field name="arch" type="xml">
                <tree create='0' edit='0' delete='0' import = '0' >
                    <field name="code" />
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="division"/>
                    <field name="category_id"/>
                    <field name="amount" />
                    <field name="action_taken_by"/>
                    <button name="action_button_view_form"  type="object" string="View Form" class="oe_highlight"/>
                    <field name="ceo_other_approval" invisible='1'/>
                </tree>
            </field>
        </record>
        <record id="approval_non_approval_view_search" model="ir.ui.view">
            <field name="name">approval_non_approval_view_search.view.search</field>
            <field name="model">approval_non_approval_report</field>
            <field name="arch" type="xml">
                <search string="Approval and Non Approval">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="category_id"/>
                    <field name="amount"/>
                    <field name="action_taken_by"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Approvals" name="groupby_ceo_other_approval" domain="[]" context="{'group_by':'ceo_other_approval'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>