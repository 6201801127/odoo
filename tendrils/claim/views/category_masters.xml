<odoo>
  <data>
    <!-- explicit list view definition -->
    <!-- actions opening views on models -->
    <record model="ir.ui.view" id="claim_sub_category_master_list">
      <field name="name">Category</field>
      <field name="model">claim_sub_category_master</field>
      <field name="arch" type="xml">
        <tree editable='top'>
          <field name="name" required='1'/>
          <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
        </tree>
      </field>
    </record>
    <record model="ir.actions.act_window" id="claim_sub_category_master_action_window">
      <field name="name">Sub Category</field>
      <field name="res_model">claim_sub_category_master</field>
      <field name="view_mode">tree</field>
    </record>
    <record id="claim_category_limit_view_tree" model="ir.ui.view">
      <field name="name">claim_category_limit.view.tree</field>
      <field name="model">claim_category_limit</field>
      <field name="arch" type="xml">
        <tree editable='top' delete='1'>
          <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
          <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
          <field name="enable_reviewer" />
          <field name="grade_ids" widget="many2many_tags" force_save ='1' options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'required':[('enable_reviewer','=',False)], 'readonly':[('enable_reviewer', '=', True)]}"/>
          <field name="employee_ids" widget="many2many_tags" force_save ='1' attrs="{'required':[('enable_reviewer','!=',False)], 'readonly':[('enable_reviewer', '=', False)]}" string='Reviewer'/>
          <field name="limit" required='1' string='Limit From'/>
          <field name="limit_to" required='1' string='Limit To'/>
          <field name="sort_no"/>
        </tree>
      </field>
    </record>
    <record model="ir.actions.act_window" id="claim_report_action_window">
      <field name="name">Claim Report</field>
      <field name="res_model">claim_report</field>
      <field name="view_mode">tree</field>
      <field name="view_type">form</field>
    </record>
    <record id="claim_report_view_tree" model="ir.ui.view">
      <field name="name">claim_report.view.tree</field>
      <field name="model">claim_report</field>
      <field name="arch" type="xml">
        <tree create='0' edit='0' delete='0' >
          <field name="code"/>
          <field name="employee_id" />
          <field name="department_id"/>
          <field name="job_id"/>
          <field name="grade_id" />
          <field name="category_id"/>
          <field name="sub_category_id"/>
          <field name="currency_id" invisible="1"/>
          <field name="amount" widget="monetary"/>
          <field name="applied_date"/>
          <field name="pending_at"/>
          <field name="state" />
          <button name="action_button_view_form"  type="object" string="View Form" class="oe_highlight"/>
        </tree>
      </field>
    </record>
    <record id="claim_report_view_search" model="ir.ui.view">
      <field name="name">claim_report.view.search</field>
      <field name="model">claim_report</field>
      <field name="arch" type="xml">
        <search string="Search Description">
          <filter string="This Year" domain="[('year', '=',context_today().strftime('%Y'))]" name="current_year_claim"/>
          <filter string="Last Year" domain="[('year', '=',(context_today()-relativedelta(years=1)).strftime('%Y'))]" name="last_year_claim"/>
          <separator/>
          <filter string="January" domain="[('month','=',1)]" name="january_claim"/>
          <filter string="February" domain="[('month','=',2)]" name="february_claim"/>
          <filter string="March" domain="[('month','=',3)]" name="march_claim"/>
          <filter string="April" domain="[('month','=',4)]" name="april_claim"/>
          <filter string="May" domain="[('month','=',5)]" name="may_claim"/>
          <filter string="June" domain="[('month','=',6)]" name="june_claim"/>
          <filter string="July" domain="[('month','=',7)]" name="july_claim"/>
          <filter string="August" domain="[('month','=',8)]" name="august_claim"/>
          <filter string="September" domain="[('month','=',9)]" name="september_claim"/>
          <filter string="October" domain="[('month','=',10)]" name="october_claim"/>
          <filter string="November" domain="[('month','=',11)]" name="november_claim"/>
          <filter string="December" domain="[('month','=',12)]" name="december_claim"/>
        </search>
      </field>
    </record>
    <record model="ir.actions.act_window" id="claim_category_limit_action_window">
      <field name="name">Category Limit</field>
      <field name="res_model">claim_category_limit</field>
      <field name="view_mode">tree</field>
    </record>
    <record id="level_configuration_view_tree" model="ir.ui.view">
      <field name="name">level_configuration.view.tree</field>
      <field name="model">level_configuration</field>
      <field name="arch" type="xml">
        <tree editable='top'>
          <field name="grade_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" required='1'/>
          <field name="sort_no" required='1'/>
        </tree>
      </field>
    </record>
    <record model="ir.actions.act_window" id="level_configuration_action_window">
      <field name="name">Level Configuration</field>
      <field name="res_model">level_configuration</field>
      <field name="view_mode">tree</field>
    </record>
    <!-- claim_log_details form view -->
    <record id="remark_wizard_view_form" model="ir.ui.view">
      <field name="name">remark_wizard.view.form</field>
      <field name="model">remark_wizard</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <!-- Add your fields here -->
              <!-- <field name="date"/>
              <field name="action_taken_by"/>
              <field name="state"/> -->
              <field name="remark" required="1"/>
            </group>
          </sheet>
          <footer>
            <button name="action_confirm_btn" type="object" string="Confirm" class="btn-success"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="kw_claim_category_tree_inherit" model="ir.ui.view">
      <field name="name">kw_claim_category_tree</field>
      <field name="model">kw_advance_claim_category</field>
      <field name="inherit_id" ref="kw_advance_claim.kw_claim_category_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
          <field name="type" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
        </xpath>
      </field>
    </record>
    <record model="ir.actions.act_window" id="claim_category_action">
      <field name="name">Claim Category</field>
      <field name="res_model">kw_advance_claim_category</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('category','=','claim')]</field>
      <field name="context">{'default_category':'claim'}</field>
    </record>
    <record model="ir.actions.act_window" id="claim_sub_category_action">
      <field name="name">Claim Type</field>
      <field name="res_model">kw_advance_claim_type</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('claim_category_id.category','=','claim')]</field>
    </record>
    <record model="ir.actions.act_window" id="claim_report_category_subcategory_action_window">
      <field name="name">Category/Subcategory-wise Expenditure</field>
      <field name="res_model">category_sub_category_report</field>
      <field name="view_mode">tree</field>
      <field name="view_type">form</field>
      <field name="search_view_id" ref="category_subcategory_view_search"/>
      <field name="context">{'group_by': 'sub_category_ids'}</field>
    </record>
    <record model="ir.actions.act_window" id="claim_report_approval_non_approval_action_window">
      <field name="name">CEO Approval Reports</field>
      <field name="res_model">approval_non_approval_report</field>
      <field name="view_mode">tree</field>
      <field name="view_type">form</field>
      <field name="search_view_id" ref="approval_non_approval_view_search"/>
      <field name="context">{'group_by': 'ceo_other_approval'}</field>
    </record>
    <menuitem name="Claim" id="claim_root_menu" 
              web_icon="claim,static/description/icon.png" sequence="30"/>
    <!-- menu categories -->
    <menuitem name="Reports" id="report_root_menu"
            parent="claim_root_menu" sequence="2"
            groups="kw_advance_claim.group_kw_advance_claim_account,kw_advance_claim.group_kw_advance_claim_admin"/>
    <menuitem name="Claim Report" id="claim_report"
              parent="report_root_menu"
              action="claim_report_action_window" sequence="1"/>

    <menuitem name="Claim Reject Report" id="cancel_reject_report"
              parent="report_root_menu"
              action="action_claim_cancel_reject_report" sequence="2"/>

    <menuitem name="Settlement Summary Report" id="settlement_report"
              parent="report_root_menu"
              action="action_settlement_summary_report" sequence="3"/>

    <menuitem name="Category Sub-category Expenditure" id="claim_report_category_sub_category_menu"
              parent="report_root_menu"
              action="claim_report_category_subcategory_action_window" sequence="4"/>
    <menuitem name="CEO Approval Report" id="claim_report_approval_non_approval_menu"
              parent="report_root_menu"
              action="claim_report_approval_non_approval_action_window" sequence="5"/>
    <menuitem name="Configuration" id="configuration_root_menu"
              parent="claim_root_menu" sequence="3"
              groups="kw_advance_claim.group_kw_advance_claim_admin"/>
    <menuitem name="Claim Category" id="category_master_menu" 
              parent="configuration_root_menu" 
              action="claim_category_action" sequence="1"/>
    <menuitem name="Claim Type" id="sub_category_master_menu"
              parent="configuration_root_menu" 
              action="claim_sub_category_action" sequence="2"/>
    <!-- <menuitem name="Claim Category Limit" id="claim_category_limit_menu" 
              parent="configuration_root_menu" 
              action="claim_category_limit_action_window" sequence="5"/> -->
    <menuitem name="Claim Approval Limit" id="claim_level_config_menu" 
              parent="configuration_root_menu" 
              action="level_configuration_action_window" sequence="4" groups="base.group_no_one"/>
    <menuitem name="Claim Category Limit" id="claim_category_limit_menu" 
              parent="configuration_root_menu" 
              action="claim_category_limit_action_window" sequence="6"/>
  </data>
</odoo>