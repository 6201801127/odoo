<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="claim_notification_approver" model="mail.template">
            <field name="name">Claim Notification Approver</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">Claim Request | ${object.employee_id.name} (${object.employee_id.emp_code})</field>
            <field name="email_to">${ctx['to_mail']}</field>
            <field name="model_id" ref="claim.model_kw_claim"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear ${ctx['user_name']},</span>
                                    </h5>
                                   
                                        <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                           Claim request of <b> ${object.currency_id.symbol} ${"%.2f" % object.amount}</b> has been applied by <b>${object.employee_id.name}</b>
                                            <br/>as per the table below for your necessary action.
                                        </p>
                                        <!-- <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 24px;">
                                            Claim Details:
                                        </p> -->
                                    
                                        <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                            <tr>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Item category </th>
                                                <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Item sub-category </th>
                                                <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Make/Model/Description</th>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Unit</th>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Qty</th>
                                                <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Rate(per unit)</th>
                                                <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Amount </th>
                                            </tr>
                                            % for rec in object.sub_category_ids:
                                                <tr>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${object.category_id.name}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.claim_category_id.claim_type}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.item_model}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.item_unit}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.item_quantity}
                                                    </td>
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${rec.item_rate}
                                                    </td>
            
                                                    <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                        ${object.currency_id.symbol}${"%.2f" % rec.amount}
                                                    </td>
                                                </tr>
                                                % endfor

                                        </table>
                                        <!-- <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                            Action Details:
                                        </p>
                                           <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                               <tr>
                                                   <th style="height: 30px;width:15%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Date</th>
                                                   <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Action Taken By</th>
                                                   <th style="height: 30px;width:15%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">State</th>
                                                   <th style="height: 30px;width:50%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Remark</th>
                                              </tr>
                                              % for rec in object.log_ids:
                                              <tr>
                                                  <td style="padding-left:5px;color:#676767;height: 34px;width:20%;">
                                                      ${format_tz(rec.date, tz='UTC', format='%d-%b-%Y')}
                                                  </td>
                                                  <td style="padding-left:5px;color:#676767;height: 34px;width:30%;">
                                                      ${rec.action_taken_by.name}
                                                  </td>
          
                                                  <td style="padding-left:5px;color:#676767;height: 34px;width:20%;">
                                                      ${rec.state}
                                                  </td>
                                                  <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                      ${rec.remark}
                                                  </td>
                                              </tr>
                                              % endfor
   
                                          </table> -->


                                     <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       <b> Remarks </b>: ${object.remark}
                                     </p>
                                </div>
                               
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    <br/>
                                    <br/>

                                    This is an automatically  generated email.

                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>