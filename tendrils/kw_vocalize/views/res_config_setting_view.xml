<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kw_vocalize_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.vocalize.form.inherit.auth</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="67"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Vocalize" string="Vocalize" data-key="kw_vocalize">
                    <h2>Vocalize</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_vocalize_from"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_vocalize_from"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
