<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_category_assessment_feedback">
            <field name="name">Assessment Feedback</field>
            <field name="description">Assessment Feedback</field>
            <field name="sequence">3</field>
        </record>

        <record id="group_assessment_feedback_assessee" model="res.groups">
            <field name="name">Assessee</field>
            <field name="category_id" ref="kw_assessment_feedback.module_category_assessment_feedback"/>
        </record>

        <record id="group_assessment_feedback_assessor" model="res.groups">
            <field name="name">Assessor</field>
            <field name="category_id" ref="kw_assessment_feedback.module_category_assessment_feedback"/>
            <field name="implied_ids" eval="[(4, ref('kw_assessment_feedback.group_assessment_feedback_assessee'))]"/>
        </record>

        <record id="group_assessment_feedback_report_manager" model="res.groups">
            <field name="name">Report Manager</field>
            <field name="category_id" ref="kw_assessment_feedback.module_category_assessment_feedback"/>
        </record>

        <record id="group_assessment_feedback_approval_manager" model="res.groups">
            <field name="name">Approval Manager</field>
            <field name="category_id" ref="kw_assessment_feedback.module_category_assessment_feedback"/>
        </record>

        <record id="group_assessment_feedback_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kw_assessment_feedback.module_category_assessment_feedback"/>
            <field name="implied_ids" eval="[(4, ref('kw_assessment_feedback.group_assessment_feedback_assessee')),(4, ref('kw_assessment_feedback.group_assessment_feedback_assessor'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_assessment_feedback_pip_manager" model="res.groups">
            <field name="name">Performance Improvement Manager</field>
            <field name="category_id" ref="kw_assessment_feedback.module_category_assessment_feedback"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('kw_assessment_feedback.group_assessment_feedback_assessee'))]"/>
        </record>

        <record id="activity_rule_pip_user" model="ir.rule">
            <field name="name">PIP Manager : Own Record Only</field>
            <field name="model_id" ref="model_kw_feedback_assessment_pip"/>
            <field name="domain_force">[('requested_by','=',user.employee_ids.id)]</field>
            <field name="groups" eval="[(4, ref('kw_assessment_feedback.group_assessment_feedback_pip_manager'))]"/>
        </record>

        <record id="activity_rule_manager" model="ir.rule">
            <field name="name">Manager: All</field>
            <field name="model_id" ref="model_kw_feedback_assessment_pip"/>
            <field name="groups" eval="[(4, ref ('kw_assessment_feedback.group_assessment_feedback_manager'))]"/>
            <field name="domain_force">['|',('requested_by','=',user.employee_ids.id),('state','!=','draft')]</field>
        </record>

    </data>
</odoo>
