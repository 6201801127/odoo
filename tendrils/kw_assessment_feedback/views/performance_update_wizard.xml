<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="performance_update_remarks_wizard_form_view" model="ir.ui.view">
        <field name="name">Performance Update Remark Wizard</field>
        <field name="model">performance_update_wizard</field>
        <field name="arch" type="xml">
            <form string="Remarks">

                <sheet>
                    <group>
                        <field name="remark" required='1'/>
                    </group>
                </sheet>
                <footer>
                    <button string="Done" name="action_done"
                            type="object" default_focus="1" class="btn-success"/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
