<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <data>
        <record id="kw_update_probation_tree_view" model="ir.ui.view">
            <field name="name">Update Probation Tree View</field>
            <field name="model">kw_probation_completion</field>
            <field name="arch" type="xml">
                <tree string="Update Probation" import='false'>
                    <field name="empl_id"/>
                    <field name="probation_confirm_status"/>
                    <field name="completion_date"/>
                    <field name="remark_confirm"/>
                    <!-- <field name="state_confirm"/> -->
                </tree>
            </field>
        </record>

        <record id="kw_update_probation_form_view" model="ir.ui.view">
            <field name="name">Update Probation Form View</field>
            <field name="model">kw_probation_completion</field>
            <field name="arch" type="xml">
                <form string="Update Probation" duplicate='false'>
                    <header>
                        <button class="btn btn-sm btn-success" string='Confirm' type="object" name="confirm_probation" 
                        attrs="{'invisible':[('state_confirm','in',['confirm'])]}"/>
                        <field name="state_confirm" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="empl_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" required="1"
                                  attrs="{'readonly':[('state_confirm','in',['confirm'])]}"/>
                                <field name="probation_confirm_status" required="1"  attrs="{'readonly':[('state_confirm','in',['confirm'])]}"></field>
                                <field name="completion_date" required="1" attrs="{'readonly':[('state_confirm','in',['confirm'])]}"/>
                                <field name="documents" filename="file_name" widget="FieldBinary"  attrs="{'readonly':[('state_confirm','in',['confirm'])]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="remark_confirm" attrs="{'readonly':[('state_confirm','in',['confirm'])]}" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="update_probation_action_window">
            <field name="name">Probation Confirmation</field>
            <field name="res_model">kw_probation_completion</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="domain">[('attendance_id','!=',False),('comp_off_allocation','!=',False),'|',('employee_id.user_id','=',uid),('employee_id.parent_id.user_id','=',uid)]</field>
            <field name="context">{"create": False,"edit": False,"import": False,"delete": False,"toolbar":False}</field> -->
            <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face">
                        No Records
                    </p>
                </field>
        </record>

        <menuitem name="Update Probation" id="kw_update_probation_feedback_menu"
		          action="update_probation_action_window" parent="kw_feedback_publish_feedback_menu"
		          sequence="3"/>
    </data>
</odoo>