<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="feedback_assessment_pip_report_tree_view" model="ir.ui.view">
            <field name="name">PIP Report Tree View</field>
            <field name="model">kw_feedback_assessment_pip</field>
            <field name="arch" type="xml">
                <tree import='0' decoration-info="(state == 'draft')" decoration-danger="(state == 'closed')" decoration-success="(state == 'inprogress')" decoration-warning="(state == 'submitted')">
                    <field name="sequence"/>
                    <field name="employee_id"/>
                    <field name="requested_by"/>
                    <field name="requested_on"/>
                    <field name="comment"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>



        <record id="assessment_pip_report_action_window" model="ir.actions.act_window">
            <field name="name">Performance Improvement Plan Report</field>
            <field name="res_model">kw_feedback_assessment_pip</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="context">{'create': False,'edit':False,'delete':False}</field>
            <field name="view_id" ref="feedback_assessment_pip_report_tree_view"/>
        </record>


    </data>
</odoo>
