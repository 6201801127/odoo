<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name form view -->
        <record id="model_kw_feedback_assessment_period_view_form" model="ir.ui.view">
            <field name="name">kw_feedback_assessment_period.view.form</field>
            <field name="model">kw_feedback_assessment_period</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="period_date"/>
                            </group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="assessors" options="{'no_create': True, 'no_open': True, 'no_edit': True}"
                                   widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="assessees" options="{'no_create': True, 'no_open': True, 'no_edit': True}"
                                   widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
