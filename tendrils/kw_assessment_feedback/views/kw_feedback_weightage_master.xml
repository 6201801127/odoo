<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- WEIGHTAGE MASTER ACTION -->
    <record id="kw_feedback_weightage_master_action" model="ir.actions.act_window">
        <field name="name">Weightage Master</field>
        <field name="res_model">kw_feedback_weightage_master</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- WEIGHTAGE MASTER TREE -->
    <record id="kw_feedback_weightage_master_tree" model="ir.ui.view">
        <field name="name">Weightage master</field>
        <field name="model">kw_feedback_weightage_master</field>
        <field name="arch" type="xml">
            <tree delete="false">
                <field name="name" />
                <field name="value" />
                <field name="from_range" />
                <field name="to_range" />
                <field name="remark" />
            </tree>
        </field>
    </record>

    <!-- WEIGHTAGE MASTER FORM -->
    <record id="kw_feedback_weightage_master_form" model="ir.ui.view">
        <field name="name">Weightage master</field>
        <field name="model">kw_feedback_weightage_master</field>
        <field name="arch" type="xml">
            <form delete="false" >
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="value" />
                        <field name="from_range" />
                        <field name="to_range" />
                        <field name="remark" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
