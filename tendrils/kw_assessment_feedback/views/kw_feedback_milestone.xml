<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- MILESTONE ACTION -->
    <record id="kw_feedback_milestone_action" model="ir.actions.act_window">
        <field name="name">Milestone</field>
        <field name="res_model">kw_feedback_milestone</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MILESTONE TREE -->
    <record id="kw_feedback_milestone_tree" model="ir.ui.view">
        <field name="name">Milestone</field>
        <field name="model">kw_feedback_milestone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="milestone_name" />
                <field name="goal_id" />
                <field name="score" />
            </tree>
        </field>
    </record>

    <!-- MILESTONE FORM -->
    <record id="kw_feedback_milestone_form" model="ir.ui.view">
        <field name="name">Milestone</field>
        <field name="model">kw_feedback_milestone</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="milestone_name" />
                            <field name="goal_id" invisible='1' options="{'no_create': True,'no_open':True, 'no_edit':True}"/>
                            <field name="score" />
                            <field name="weightage_id" options="{'no_create': True,'no_open':True, 'no_edit':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
