<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_assessment_schedule_email_template" model="mail.template">
            <field name="name">Schedule Reminder | Assessment Feedback</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Feedback Status for ${object.assessee_id.name} | ${object.period_id.name}</field>
            <field name="email_to"></field>
            <field name="email_cc"></field>
            <field name="model_id" ref="kw_assessment_feedback.model_kw_feedback_final_config"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        Pratima Mahapatra,
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Assessment feedback has been given by ${object.assessor_id.name} for ${object.assessee_id.name}.
                                    </p>
                                </div>
                               
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Assessor
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.assessor_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Assessment Type
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.assessment_tagging_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Period
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.period_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Status
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${dict(object.fields_get(allfields=['feedback_status'])['feedback_status']['selection'])[object.feedback_status]}
                                        </td>
                                    </tr>
                                </table>
                                
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>