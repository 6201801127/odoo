<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_assessment_probationary_reminder_email_template" model="mail.template">
            <field name="name">Final Feedback Reminder | Assessment Feedback</field>
            <field name="email_from">${object.assessor_id.company_id and object.assessor_id.company_id.email or ''}</field>
            <field name="subject">Reminder | ${object.feedback_details_id.assessment_tagging_id.name} for ${object.assessee_id.name}</field>
            <field name="email_to">${object.assessor_id.work_email}</field>
            <field name="email_cc"></field>
            <field name="model_id" ref="kw_assessment_feedback.model_kw_feedback_final_config"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.assessor_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please be informed that you have not given the feedback for ${object.assessee_id.name} for ${object.feedback_details_id.assessment_tagging_id.name} held on ${format_tz(object.assessment_date, format='%d-%b-%Y')}..
                                    </p>
                                </div>

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to give feedback.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>