<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_goal_milestone_email_template" model="mail.template">
            <field name="name">Next Goal Milestone Feedback | Assessment Feedback</field>
            <field name="email_from">${user.email or ''}</field>
            <field name="subject">Next Period Goal | ${dict(object.fields_get(allfields=['months'])['months']['selection'])[object.months]}-${object.year} | ${object.emp_id.display_name} </field>
            <field name="email_to">${object.emp_id.work_email}</field>
            <field name="email_cc">${object.emp_id.parent_id.work_email if object.emp_id.parent_id else ''}</field>
            <field name="model_id" ref="kw_assessment_feedback.model_kw_feedback_goal_and_milestone"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.emp_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please be informed that your goal and milestone for ${dict(object.fields_get(allfields=['months'])['months']['selection'])[object.months]}-${object.year} has been released.</p>
                                </div>

                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Goal
                                        </td>
                                        <td style="color:#167b9e;height: 34px;">
                                            ${object.goal_name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;height: 34px;" width="200px">
                                            Milestones
                                        </td>
                                        <td style="color:#167b9e;height: auto;">
                                            % for mile in object.milestones:
                                                <li>${mile.milestone_name}</li>
                                            % endfor
                                        </td>
                                    </tr>
                                </table>
                               
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ------------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>         