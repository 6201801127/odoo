<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_publish_feedback_email_template" model="mail.template">
            <field name="name">Periodic Publish Feedback | Assessment Feedback</field>
            <field name="email_from">${object.assessee_id.company_id and object.assessee_id.company_id.email or ''}</field>
            <field name="subject">${object.assessment_tagging_id.name} Result | ${object.assessee_id.name}</field>
            <field name="email_to">${object.assessee_id.work_email}</field>
            <field name="email_cc">${object.get_cc_emails() or ''}</field>
            <field name="model_id" ref="kw_assessment_feedback.model_kw_feedback_details"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.assessee_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please be informed that your ${object.assessment_tagging_id.name} feedback has been released and now active for the month of ${object.period_id.name}.
                                    </p>

                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        These feedbacks will help you to assess your weak areas.<br/>
                                        To develop in those areas please take guidance from your assessors and work on it to improve the performance if required.
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                    Click the below button to redirect to the view feedback form.
                                        <div style="margin: 16px 0px 16px 0px;">
                                            <a href="${object.view_feedback_url}" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                                Click Here
                                            </a>
                                        </div>
                                    </p>
                                </div>
                               
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record> 

        <record id="kw_probationary_publish_feedback_email_template" model="mail.template">
            <field name="name">Final Publish Feedback | Assessment Feedback</field>
            <field name="email_from">${object.assessee_id.company_id and object.assessee_id.company_id.email or ''}</field>
            <field name="subject">${object.assessment_tagging_id.name} Result | ${object.assessee_id.name}</field>
            <field name="email_to">${object.assessee_id.work_email}</field>
            <field name="email_cc">${ctx['email_cc']}</field>
            <field name="model_id" ref="kw_assessment_feedback.model_kw_feedback_details"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                        ${object.assessee_id.name},
                                    </h5>
                                    <div style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        --probationary_content--
                                    </div>
                                </div>
                               
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please login to Tendrils to see details.<br/>
                                        ---------------------------------------------------
                                        <br/>
                                        This is a system generated mail. Please do not reply to this email. 
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>