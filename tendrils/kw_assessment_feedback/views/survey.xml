<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_assessment_feedback_survey_template_view_tree" model="ir.ui.view">
            <field name="name">Assessment Feedback</field>
            <field name="model">survey.survey</field>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <tree string="Survey" delete="false">
                    <field name="active" invisible="1"/>
                    <field name="title"/>
                </tree>
            </field>
        </record>

        <record id="kw_assessment_feedback_survey_template_view_form" model="ir.ui.view">
            <field name="name">Assessment Feedback</field>
            <field name="model">survey.survey</field>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <form delete="false">
                    <sheet>
                        <group>
                            <field name="title" placeholder="Title"/>
                        </group>
                        <notebook>
                            <page string="Edit Pages and Questions">
                                <field name="page_ids" mode="tree" context="{'default_survey_id': active_id}" nolabel="1">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="title"/>
                                        <field name="question_ids"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_kw_assessment_feedback_survey_templates">
            <field name="name">Templates</field>
            <field name="res_model">survey.survey</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('survey_type.code','=','assessment_feedback')]</field>
            <field name="context" eval="{'default_survey_type': ref('kw_assessment_feedback.kw_feedback_assessment_survey_type')}"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Add a new template
                </p>
                <p>
                You can create templates for different assessments: Technical,Non-Technical,Intern,Lateral etc.
                </p>
                <p>
                Design easily your template, schedule assessments to answer by web and analyse answers.
                </p>
            </field>
        </record>

        <record id="action_kw_assessment_feedback_survey_templates_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_assessment_feedback_survey_template_view_tree"/>
            <field name="act_window_id" ref="action_kw_assessment_feedback_survey_templates"/>
        </record>

        <record id="action_kw_assessment_feedback_survey_templates_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="kw_assessment_feedback_survey_template_view_form"/>
            <field name="act_window_id" ref="action_kw_assessment_feedback_survey_templates"/>
        </record>
    </data>
</odoo>