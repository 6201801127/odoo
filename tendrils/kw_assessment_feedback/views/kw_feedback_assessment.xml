<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_feedback_assessment_action" model="ir.actions.act_window">
        <field name="name">Assessment</field>
        <field name="res_model">kw_feedback_assessment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="kw_feedback_assessment_form" model="ir.ui.view">
        <field name="name">Assessment</field>
        <field name="model">kw_feedback_assessment</field>
        <field name="arch" type="xml">
            <form delete="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="assessment_type" required='1'/>
                            <field name="frequency"/>
                            <field name="benchmark" />
                            <field name="is_goal"/>
                            <field name="description"/>
                        </group>
                        <group string="Assessment Modes">
                            <field name="portal"/>
                            <field name="face_to_face"/>
                            <field name="practical_test"/>
                            <field name="presentation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kw_feedback_assessment_tree" model="ir.ui.view">
        <field name="name">Assessment</field>
        <field name="model">kw_feedback_assessment</field>
        <field name="arch" type="xml">
            <tree delete="false">
                <field name="name"/>
                <field name="code"/>
                <field name="frequency"/>
                <field name="assessment_type"/>
                <field name="benchmark" />
                <field name="is_goal"/>
                <field name="portal"/>
                <field name="face_to_face"/>
                <field name="practical_test"/>
                <field name="presentation"/>
                <!-- <field name="assessment_mode_ids" widget="many2many_tags" /> -->
            </tree>
        </field>
    </record>

</odoo>
 