<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="weightage_score_view" name="Weightage Score Panel">
            <script>
                $('#close_panel').click(function(){
                    $('.o_onboarding_container').hide();
                });
            </script>
            <div class="o_onboarding_container collapse show">
                <div class="o_onboarding  o_onboarding_orange" style="background-image:url(/account/static/src/img/account_dashboard_onboarding_bg.jpg)">
                    <div class="o_onboarding_wrap">
                        <a id="close_panel" class="float-right o_onboarding_btn_close">
                            <i class="fa fa-times" title="Close the onboarding panel"></i>
                        </a>
                        <div class="o_onboarding_steps">
                            <t t-foreach="weightage_master" t-as="wm">
                                <div class="o_onboarding_step o_onboarding_current">
                                    <div class="o_onboarding_confetti">
                                        <div>
                                            <div class="flake color-3"></div>
                                            <div class="ribbon color-1"></div>
                                            <div class="ribbon color-2"></div>
                                            <div class="flake color-1"></div>
                                            <div></div>
                                        </div>
                                        <div>
                                            <div class="ribbon color-2"></div>
                                            <div class="flake color-2"></div>
                                            <div class="flake color-3"></div>
                                            <div class="ribbon color-1"></div>
                                            <div class="flake color-4"></div>
                                            <div></div>
                                        </div>
                                        <div>
                                            <div class="ribbon color-1"></div>
                                            <div class="ribbon color-4"></div>
                                            <div class="ribbon color-2"></div>
                                            <div class="flake color-3"></div>
                                            <div></div>
                                        </div>
                                        <div>
                                            <div class="flake color-3"></div>
                                            <div class="ribbon color-1"></div>
                                            <div class="ribbon color-4"></div>
                                            <div class="flake color-3"></div>
                                            <div class="ribbon color-2"></div>
                                            <div></div>
                                        </div>
                                        <div>
                                            <div class="ribbon color-2"></div>
                                            <div class="flake color-3"></div>
                                            <div class="flake color-4"></div>
                                            <div class="ribbon color-1"></div>
                                            <div></div>
                                        </div>
                                    </div>

                                    <div class="o_onboarding_progress d-none d-md-inline-block progress">
                                        <div class="progress-bar"></div>
                                    </div>
                                    <span class="o_onboarding_dot d-none d-md-inline-block fa fa-check"></span>
                                    <div class="o_onboarding_step_content">
                                        <div class="o_onboarding_step_content_info">
                                            <h4 class="o_onboarding_step_title mt16">
                                                <a class="text-white">
                                                    <t t-esc="wm.name" />
                                                </a>
                                            </h4>
                                            <p class="mb16">
                                                Range : <t t-esc="wm.from_range" />%
 -                                            <t t-esc="wm.to_range" />%
                                        </p>
                                    </div>
                                    <a class="o_onboarding_step_action btn font-weight-bold">
                                        <t t-esc="wm.value" />
                                    </a>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </template>
</data>
</odoo>
