<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="performance_submit_remarks_wizard_form_view" model="ir.ui.view">
        <field name="name">Performance Submit Remark Wizard</field>
        <field name="model">performance_submit_wizard</field>
        <field name="arch" type="xml">
            <form string="Remarks">

                <div class="row">
                    <div class="col-sm-12 mx-auto">
                        <p style="font-size : 20px; text-align: center; color: red;">
                            Are you sure to submit this request?
                        </p>
                    </div>
                </div>
                <footer>
                    <button string="Yes  " name="action_done"
                            type="object" default_focus="1" class="btn-success"/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
