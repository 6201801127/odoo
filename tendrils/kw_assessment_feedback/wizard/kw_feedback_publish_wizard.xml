<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_assessment_feedback_publish_wizard" model="ir.ui.view">
            <field name="name">Publish Wizard</field>
            <field name="model">kw_feedback_publish_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <b invisible="context.get('value12',False)">
                                <h2 class="text-center text-uppercase text-primary mb-5">Are you sure you want to publish ?</h2>
                            </b>
                            <group>
                                <field name="cc_users" widget='many2many_tags' options="{'no_create': True, 'no_open': True, 'no_edit': True}" invisible="context.get('value11',False)"/>
                                <!-- <field name="body" required="context.get('value12',False)" invisible="context.get('value11',False)"/> -->
                            </group>
                            <center>
                                <button name="publish_feedback" type="object" class="btn-success mr-2">Publish</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_assessment_feedback_view_publish_wizard" model="ir.ui.view">
            <field name="name">Publish Wizard</field>
            <field name="model">kw_feedback_publish_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <b invisible="context.get('value12',False)">
                                <h2 class="text-center text-uppercase text-primary mb-5">Are you sure to publish ?</h2>
                            </b>
                            <group>
                                <field name="cc_users" widget='many2many_tags' options="{'no_create': True, 'no_open': True, 'no_edit': True}" invisible="context.get('value11',False)"/>
                                <!-- <field name="body" required="context.get('value12',False)" invisible="context.get('value11',False)"/> -->
                            </group>
                            <center>
                                <button name="publish_feedback" type="object" class="btn-success mr-2">Publish</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_assessment_publish_wizard_action" model="ir.actions.act_window">
            <field name="name">Publish Wizard</field>
            <field name="res_model">kw_feedback_publish_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_assessment_feedback_view_publish_wizard"/>
            <field name="target">new</field>
            <field name="context">{'value11':context.get('periodic',False),'value12':context.get('probationary',False)}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Periodic Assessment Feedback Here...
                </p>
            </field>
        </record>
        <act_window id="kw_assessment_feedback_publish_wizard_actions" context="{'value11':context.get('periodic',False),'value12':context.get('probationary',False)}" groups='kw_assessment_feedback.group_assessment_feedback_manager,kw_employee.group_hr_ra' name="Publish" src_model="kw_feedback_details" res_model="kw_feedback_publish_wizard" view_type="form" view_mode="form" key2="client_action_multi" target="new" />
    </data>
</odoo>