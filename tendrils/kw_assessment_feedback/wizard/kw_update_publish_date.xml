<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_feedback_update_date_wizard" model="ir.ui.view">
            <field name="name">Update Date Wizard</field>
            <field name="model">kw_update_date_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="from_date" autocomplete='off' required="context.get('value1',False)" invisible="context.get('value2',False)" />
                                <field name="to_date" autocomplete='off' required="context.get('value1',False)" invisible="context.get('value2',False)" />
                                <field name="assessment_date" autocomplete='off' required="context.get('value2',False)" invisible="context.get('value1',False)" />
                            </group>
                            <center>
                                <button name="update_date" type="object" class="btn-success mr-2">Update</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <act_window id="kw_update_date_wizard_actions" context="{'value1':context.get('periodic',False),'value2':context.get('probationary',False)}" groups='kw_assessment_feedback.group_assessment_feedback_manager' name="Update Date"
		            src_model="kw_feedback_details" res_model="kw_update_date_wizard"
		            view_type="form" view_mode="form" key2="client_action_multi" target="new" />
    </data>
</odoo>