<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_assessment_feedback_approval_wizard" model="ir.ui.view">
            <field name="name">Approval Wizard</field>
            <field name="model">kw_feedback_approval_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="approval_user" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                            </group>
                            <center>
                                <button name="send_for_approval" type="object" class="btn-success mr-2">Send</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_assessment_feedback_approval_view_wizard" model="ir.ui.view">
            <field name="name">Approval Wizard</field>
            <field name="model">kw_feedback_approval_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="approval_user" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                            </group>
                            <center>
                                <button name="send_for_approval" type="object" class="btn-success mr-2">Send</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_assessment_feedback_approval_view_action" model="ir.actions.act_window">
            <field name="name">Approval Wizard</field>
            <field name="res_model">kw_feedback_approval_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_assessment_feedback_approval_view_wizard"/>
            <field name="target">new</field>
            <!-- <field name="context">{'value1':context.get('periodic',False),'value2':context.get('probationary',False)}</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Periodic Assessment Feedback Here...
                </p>
            </field>
        </record>

        <act_window id="kw_assessment_feedback_approval_wizard_actions" groups='kw_assessment_feedback.group_assessment_feedback_manager' name="Send For Approval" src_model="kw_feedback_details" res_model="kw_feedback_approval_wizard" view_type="form" view_mode="form" key2="client_action_multi" target="new" />
    </data>
</odoo>