<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_feedback_update_period_date_wizard" model="ir.ui.view">
            <field name="name">Update Date Wizard</field>
            <field name="model">kw_update_period_date_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="from_date" autocomplete='off' required="context.get('value1',False)" invisible="context.get('value2',False)" />
                                <field name="to_date" autocomplete='off' required="context.get('value1',False)" invisible="context.get('value2',False)" />
                                <field name="assessment_date" autocomplete='off' required="context.get('value2',False)" invisible="context.get('value1',False)" />
                            </group>
                            <center>
                                <button name="update_date" type="object" class="btn-success mr-2">Update</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_feedback_update_period_date_view_wizard" model="ir.ui.view">
            <field name="name">Update Date Wizard</field>
            <field name="model">kw_update_period_date_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-4 mx-auto">
                            <group>
                                <field name="from_date" autocomplete='off' required="context.get('value1',False)" invisible="context.get('value2',False)" />
                                <field name="to_date" autocomplete='off' required="context.get('value1',False)" invisible="context.get('value2',False)" />
                                <field name="assessment_date" autocomplete='off' required="context.get('value2',False)" invisible="context.get('value1',False)" />
                            </group>
                            <center>
                                <button name="update_date" type="object" class="btn-success mr-2">Update</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="kw_assessment_feedback_update_period_date_action" model="ir.actions.act_window">
            <field name="name">Update Date Wizard</field>
            <field name="res_model">kw_update_period_date_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_feedback_update_period_date_view_wizard"/>
            <field name="target">new</field>
            <field name="context">{'value1':context.get('periodic',False),'value2':context.get('probationary',False)}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Periodic Assessment Feedback Here...
                </p>
            </field>
        </record>

        <act_window id="kw_update_period_date_wizard_actions" context="{'value1':context.get('periodic',False),'value2':context.get('probationary',False)}" groups='kw_assessment_feedback.group_assessment_feedback_manager' name="Update Date"
		            src_model="kw_feedback_assessment_period" res_model="kw_update_period_date_wizard"
		            view_type="form" view_mode="form" key2="client_action_multi" target="new" />
    </data>
</odoo>