<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="send_mail_assessment" model="ir.ui.view">
            <field name="name">Send Mail</field>
            <field name="model">send_mail</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <group>
                                <field name="mail_type" required='1' autocomplete='off'/>
                                <!-- <field name="body" attrs="{'invisible': [('mail_type', 'in', ['schedule',False])]}" invisible="context.get('value111',False)"/> -->
                            </group>
                            <center>
                                <button name="action_send_mail" type="object" class="btn-success mr-2">Submit</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="send_mail_assessment_view" model="ir.ui.view">
            <field name="name">Send Mail</field>
            <field name="model">send_mail</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <group>
                                <field name="mail_type" required='1' autocomplete='off'/>
                            </group>
                            <center>
                                <button name="action_send_mail" type="object" class="btn-success mr-2">Submit</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <record id="send_mail_assessment_action" model="ir.actions.act_window">
            <field name="name">Send Mail</field>
            <field name="res_model">send_mail</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="send_mail_assessment_view"/>
            <field name="target">new</field>
            <field name="context">{'value111':context.get('periodic',False),'value112':context.get('probationary',False)}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No Periodic Assessment Feedback Here...
                </p>
            </field>
        </record>

        <act_window id="send_mail_action_wizard" context="{'value111':context.get('periodic',False),'value112':context.get('probationary',False)}" groups='kw_assessment_feedback.group_assessment_feedback_manager' name="Send Mail" src_model="kw_feedback_details" res_model="send_mail" view_type="form" view_mode="form" key2="client_action_multi" target="new" />
    </data>
</odoo>