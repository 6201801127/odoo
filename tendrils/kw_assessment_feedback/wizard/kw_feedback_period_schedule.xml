<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kw_feedback_schedule_view_form" model="ir.ui.view">
            <field name="name">Schedule feedbacks</field>
            <field name="model">kw_feedback_schedule</field>
            <field name="arch" type="xml">
                <form>
                    <script>
                    $(document).ready(function(){
                        $(".modal-footer").hide();
                        $(".modal-title").show();
                        $(".o_form_statusbar").hide();
                    });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <b>
                                <h2 class="text-center text-uppercase text-primary mb-5">Are you sure you want to schedule ?</h2>
                            </b>
                            <center>
                                <button name="schedule_feedback" type="object" class="btn-success mr-2">Schedule</button>
                                <button string="Cancel" class="btn-danger" special="cancel"/>
                                <footer></footer>
                            </center>
                        </div>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kw_feedback_schedule_actions" groups='kw_assessment_feedback.group_assessment_feedback_manager' name="Schedule" src_model="kw_feedback_assessment_period" res_model="kw_feedback_schedule" view_type="form" view_mode="form" key2="client_action_multi" target="new"/>
    </data>
</odoo>