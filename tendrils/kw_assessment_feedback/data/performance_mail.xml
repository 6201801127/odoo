        <record id="probation_completion_record" model="mail.template">
            <field name="name">Completion Probation Of Employees Reminder Mail</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">Reminder Mail || Probation Completion of Employee</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <field name="model_id" ref="kw_assessment_feedback.model_kw_feedback_final_config"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Hi Team,
                                        </span>
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       These employees Probation complete near 30 days.
                                    </p>
                                </div>
                                <table border="1" cellpadding="5" cellspacing="0" style="width:100%;border-collapse: collapse;font-size: 16px; margin-top:1rem;">
                                    <tr>
                                        <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Employee Name </th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Department </th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Division</th>
                                        <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Section</th>
                                        <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Designation</th>
                                        <th style="height: 30px;width:10%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Date of Joining</th>
                                        <th style="height: 30px;width:20%;padding-left:5px; font-weight:700;color:#676767;text-align:left;">Probation Complete Date </th>
                                    </tr>
                                    % for rec in ctx['records']:
                                        <tr>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.name:
                                                    ${rec.name}(${rec.emp_code})
                                                % endif
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.department_id:
                                                    ${rec.department_id.name} 
                                                % endif
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.division:
                                                    ${rec.division.name} 
                                                % endif
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.section:
                                                    ${rec.section.name} 
                                                % endif
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.job_id:
                                                    ${rec.job_id.name} 
                                                % endif
                                            </td>
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.date_of_joining:
                                                    ${rec.date_of_joining} 
                                                % endif
                                            </td>
    
                                            <td style="padding-left:5px;color:#676767;height: 34px;width:40%;">
                                                % if rec.date_of_completed_probation:
                                                    ${rec.date_of_completed_probation} 
                                                % endif
                                            </td>
                                        </tr>
                                    % endfor
                                </table>

                                    

                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
        
