<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_probationary_assessment_report_tree" model="ir.ui.view">
            <field name="name">view.kw_probationary_assessment_report.tree</field>
            <field name="model">kw_probationary_assessment_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_probationary_assessment_report_tree" create="false" delete="false" edit="false" import="false">
                    <field name="assessee" />
                    <field name="designation" />
                    <field name="department" />
                    <field name="assessors"/>
                    <field name="fst_assessment_date" />
                    <field name="fst_score" />
                    <field name="fst_weightage" />
                    <field name="fst_assessment_result" />
                    <field name="fst_periodic_result" />
                    <field name="sec_periodic_result" />
                    <field name="trd_periodic_result"/>
                    <button class="btn btn-sm oe_highlight" name="view_assessee_feedback_details" type="object" string="View Details"/>
                </tree>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_kw_probationary_assessment_report_search" model="ir.ui.view">
            <field name="name">view.kw_probationary_assessment_report.search</field>
            <field name="model">kw_probationary_assessment_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_probationary_assessment_report_search">
                    <field name="assessee" />

                </search>
            </field>
        </record>

        <!-- model.name pivot view -->
        <record id="view_kw_probationary_assessment_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_probationary_assessment_report.pivot</field>
            <field name="model">kw_probationary_assessment_report</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <!-- Add your fields here -->
                    <field name="assessee" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- Main window action for "model" -->
        <record id="action_kw_probationary_assessment_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Final Assessment Progress Report</field>
            <field name="res_model">kw_probationary_assessment_report</field>
            <field name="view_mode">tree,pivot</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_kw_probationary_assessment_report_search" />
        </record>

        <record id="view_kw_probationary_assessment_employee_report_tree" model="ir.ui.view">
            <field name="name">view.kw_probationary_assessment_employee_report.tree</field>
            <field name="model">kw_probationary_assessment_employee_report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="kw_probationary_assessment_Employee" create="false" delete="false" edit="false" import="false">
                    <field name="emp_code" />
                    <field name="assessee" />
                    <field name="department"/>
                    <field name="division" />
                    <field name="section" />
                    <field name="practise" />
                    <field name="designation" />
                    <field name="date_of_joining" />
                    <field name="probation_complete_date"/>
                    <field name="total_assesses_count"/>
                    <field name="count_check" invisible='1'/>

                    <button name="action_button_view_tree"  type="object" string="View Details" class="oe_highlight" attrs="{'invisible':[('count_check','=',False)]}"/>

                </tree>
            </field>
        </record>
        <record id="action_kw_probationary_assessment_report_employee_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Pending Probationary Assessment of Employee</field>
            <field name="res_model">kw_probationary_assessment_employee_report</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>
