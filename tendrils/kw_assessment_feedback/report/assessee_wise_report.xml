<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_assessee_wise_report_tree" model="ir.ui.view">
            <field name="name">view.kw_assessee_wise_reporttree</field>
            <field name="model">kw_assessee_wise_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_assessee_wise_report_tree" create="false" delete="false" edit="false">
                    <field name="assessee" />
                    <field name="designation" />
                    <field name="date_of_joining" />
                    <field name="probation_complete_date" />
                    <field name="period" />
                    <field name="assessment_type" />
                    <field name="status" />
                </tree>
            </field>
        </record>
        
               
        <!-- Search view for "model" -->
        <record id="view_kw_assessee_wise_report_search" model="ir.ui.view">
            <field name="name">view.kw_assessee_wise_reportsearch</field>
            <field name="model">kw_assessee_wise_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="kw_assessee_wise_report_search">
                    <field name="assessee" />
                    <field name="designation" />
                    <!-- <filter string="This Year" domain="[('period_date', 'like',context_today().strftime('%Y'))]" name="current_year_feedback"/>
                    <filter string="This month" domain="[('period_date', 'like',context_today().strftime('%m'))]" name="current_month_feedback"/>
                    <filter string="January" domain="[('period_month','=','January')]" name="january_feedback"/>
                    <filter string="February" domain="[('period_month','=','February')]" name="february_feedback"/>
                    <filter string="March" domain="[('period_month','=','March')]" name="march_feedback"/>
                    <filter string="April" domain="[('period_month','=','April')]" name="april_feedback"/>
                    <filter string="May" domain="[('period_month','=','May')]" name="may_feedback"/>
                    <filter string="June" domain="[('period_month','=','June')]" name="june_feedback"/>
                    <filter string="July" domain="[('period_month','=','July')]" name="july_feedback"/>
                    <filter string="August" domain="[('period_month','=','August')]" name="august_feedback"/>
                    <filter string="September" domain="[('period_month','=','September')]" name="september_feedback"/>
                    <filter string="October" domain="[('period_month','=','October')]" name="october_feedback"/>
                    <filter string="November" domain="[('period_month','=','November')]" name="november_feedback"/>
                    <filter string="December" domain="[('period_month','=','December')]" name="december_feedback"/> -->

                    <filter string="Current Period" domain="[('period_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01')), ('period_date','&gt;=',time.strftime('%Y-%m-01'))]" name="by_current_month_year"/>

                    <separator/>

                    <filter string="Last Period" domain="[('period_date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01')),('period_date','&lt;',time.strftime('%Y-%m-01'))]" name="by_last_month_year"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_assessment" context="{'group_by': 'assessment_type'}" string="Assessment Type" help="Group Feedback by Assessment"/>
                        <filter name="group_by_period" context="{'group_by': 'period'}" string="Period" help="Group Feedback by Period"/>
                        <filter name="group_by_state" context="{'group_by': 'status'}" string="Status" help="Group Feedback by State"/>
                    </group>
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_kw_assessee_wise_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Assessee Report</field>
            <field name="res_model">kw_assessee_wise_report</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_by_current_month_year':1,}</field>
            <field name="search_view_id" ref="view_kw_assessee_wise_report_search" />
        </record>
    </data>
</odoo>
