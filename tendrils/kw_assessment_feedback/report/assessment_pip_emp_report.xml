<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_pip_employee_report_tree" model="ir.ui.view">
            <field name="name">view_pip_employee_report_tree.tree</field>
            <field name="model">pip_employee_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="pip_employee_report_tree" create="false" delete="false" edit="false" import="false" decoration-info="(status == 'draft')" decoration-danger="(status == 'closed')" decoration-success="(status == 'inprogress')" decoration-warning="(status == 'submitted')">
                    <field name="sequence" />
                    <field name="emp_name" />
                    <field name="closure_remark" />
                    <field name="requested_on" />
                    <field name="requested_by"/>
                    <field name="status" />
                </tree>
            </field>
        </record>

       
        <!-- Main window action for "model" -->
        <record id="action_pip_employee_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Performance Improvement Plan Report</field>
            <field name="res_model">pip_employee_report</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <!-- <field name="search_view_id" ref="view_kw_assessment_progress_report_search" /> -->
        </record>
    </data>
</odoo>
