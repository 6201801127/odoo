<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="job_list_link" name="Link to frontend portal job list" inherit_id="portal.frontend_layout">
		<xpath expr="//a[@href='/my/home']" position="attributes">
			<attribute name="id">my_home</attribute>
			<attribute name="invisible">True</attribute>
		</xpath>
		<xpath expr="//a[@id='o_logout']" position="before">
			<a href="/c/job-openings" role="menuitem" class="dropdown-item" id="con_job_opening">Job List</a>
		</xpath>

	</template>
	<template id="my_account_link_inherit_from_addons" name="Link to frontend portal My Account" inherit_id="portal.frontend_layout">
		<xpath expr="//a[@href='/my/home']" position="replace">
            <!-- <a href="/my/home" role="menuitem" class="dropdown-item">My Account</a> -->
        </xpath>
    </template>
</odoo>