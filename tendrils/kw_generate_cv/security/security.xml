<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="generate_cv_group" model="ir.module.category">
            <field name="name">Generate CV Group</field>
        </record>

        <record id="generate_cv_user_group" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="generate_cv_group" />
        </record>

        <record id="generate_cv_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="generate_cv_group" />
        </record>

        <record id="activity_rule_user" model="ir.rule">
            <field name="name">activity: user: own only</field>
            <field name="model_id" ref="model_hr_cv_mapping"/>
            <field name="domain_force">[('requested_by','=',user.employee_ids.id)]</field>
            <field name="groups" eval="[(4, ref('kw_generate_cv.generate_cv_user_group'))]"/>
        </record>

        <record id = "activity_rule_manager" model = "ir.rule">
            <field name = "name">activity: manager: All</field>
            <field name = "model_id" ref = "model_hr_cv_mapping" />
            <field name = "groups" eval = "[(4, ref ('kw_generate_cv.generate_cv_manager_group'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    </data>
</odoo>