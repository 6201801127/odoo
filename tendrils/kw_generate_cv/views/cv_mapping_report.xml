<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="cv_mapping_report_tree" model="ir.ui.view">
			<field name="name">CV Mapping Report</field>
			<field name="model">cv_mapping_report</field>
			<field name="arch" type="xml">
				<tree create='0' edit='0' delete='0' import='0'>
                    <field name="id" string="SL No."/>
                    <field name="sequence"/>
                    <field name="account_holder"/>
                    <field name="resource_name"/>
                    <!-- <field name="emp_id"/> -->
                    <field name="designation"/>
                    <field name="project"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="state" invisible='1'/>
				</tree>
			</field>
		</record>
		
		<record id="cv_mapping_report_search" model="ir.ui.view">
			<field name="name">CV Mapping Report Search</field>
			<field name="model">cv_mapping_report</field>
			<field name="arch" type="xml">
				<search>
					<!-- Add your fields here -->
					<field name="sequence"/>
                    <field name="resource_name"/>
                    <field name="designation"/>
                    <field name="account_holder"/>
                    <field name="project"/>
					<filter string="Applied" name="state" domain="[('state','=','applied')]"/>
					<filter string="Tagged" name="state" domain="[('state','=','tagged')]"/>
					<filter string="Approved" name="state" domain="[('state','=','approve')]"/>
					<filter string="Rejected" name="state" domain="[('state','=','reject')]"/>
					<filter string="Cancelled" name="state" domain="[('state','=','cancel')]"/>
					<!-- <group expand="0" string="Group By">
                        <filter string="Request Code" name="sequence" context="{'group_by':'sequence'}"/>
                        <filter string="Project" name="project" context="{'group_by':'project'}"/>
                        <filter string="Resource Name" name="resource_name" context="{'group_by':'resource_name'}"/>
                    </group> -->
				</search>
			</field>
		</record>
			

		<!-- kw_contract_end_log action window -->
		<record id="cv_mapping_report_action" model="ir.actions.act_window">
			<field name="name">CV Mapping Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">cv_mapping_report</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
		</record>


        <menuitem id="cv_mapping_report_menu"
				  name="Report"
				  action="cv_mapping_report_action"
				  sequence="1002"
				  parent="hr_employee_generate_cv2_menu_root"
				  groups="kw_generate_cv.generate_cv_manager_group"
		/>


	</data>
</odoo>