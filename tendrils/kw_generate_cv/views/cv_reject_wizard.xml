<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cv_reject_remarks_wizard_form_view" model="ir.ui.view">
        <field name="name">cv reject remark wizard</field>
        <field name="model">cv_mapping_reject_wizard</field>
        <field name="arch" type="xml">
            <form string="Remarks">

                <sheet>
                    <group>
                        <field name="remark" required='1'/>
                    </group>
                </sheet>
                <footer>
                    <button string="Done" name="action_reject_remark"
                            type="object" default_focus="1" class="btn-success"/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

