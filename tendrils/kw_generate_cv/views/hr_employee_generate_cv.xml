<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="hr_employee_generate_cv_tree_view" model="ir.ui.view">
            <field name="name">Generate CV Tree View</field>
            <field name="model">hr.employee</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree create='false' import='false' edit='false' delete='false'>
                    <field name="name"/>
                    <field name="emp_code"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                    <button name="view_cv_button" type="object" string="View CV" class="oe_highlight"/>
                    <button name="%(action_report_generate_cv_docx)d"
                            class="oe_highlight" string="Generate CV" type="action"/>
                </tree>
            </field>
        </record>


        <record id="hr_employee_generate_cv_form_view" model="ir.ui.view">
            <field name="name">Generate CV Form View</field>
            <field name="model">hr.employee</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form create='0' edit='0' delete='0' import='0'>
                    <header>
                        <!-- <button name="button_cv_download" type="object" string="View CV" class="oe_highlight"/>-->
                        <button name="%(action_report_generate_cv_docx)d"
                                class="oe_highlight" string="Generate CV" type="action"/>
                    </header>
                    <table style="width: 99%; margin-top: 5px" class="table table-bordered">
                        <tbody>
                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">1</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Proposed Position
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <strong>
                                        <field name="job_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                    </strong>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">2</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Name of Firm
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="company_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">3</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Name of Staff
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="name" readonly='1'/>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">4</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Date of Joining
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="date_of_joining" readonly='1'/>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">5</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Nationality
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="country_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">6</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Qualification
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="educational_details_ids" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">7</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Membership of Professional Organization
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="membership_assc_ids" readonly='1'/>
                                </td>
                            </tr>

                            <!-- <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">8</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Training and Publication
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="" readonly='1'/>
                                </td>
                            </tr> -->

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">9</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Work Experience
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="work_experience_ids" readonly='1'>
                                        <tree>
                                            <field name="name"/>
                                        </tree>
                                    </field>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">10</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Languages
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="known_language_ids" readonly='1'/>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">11</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Employment Record
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="work_experience_ids" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}">
                                        <tree>
                                            <field name="country_id"/>
                                            <field name="name"/>
                                            <field name="designation_name"/>
                                            <field name="organization_type"/>
                                            <field name="industry_type"/>
                                            <field name="effective_from"/>
                                            <field name="effective_to"/>
                                            <field name="effective_experiance"/>
                                        </tree>
                                    </field>
                                </td>
                            </tr>

                            <!-- <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%">12</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%">
                                    Details of Task Assigned
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%">
                                    <field name="country_id" readonly='1'/>
                                </td>
                            </tr> -->

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%;">13</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%;">
                                    Work Undertaken that Illustrates Capability to Assigned Handle the Task Assigned
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%;">
                                    <field name="cv_info_details_ids" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}">
                                        <tree>
                                            <field name="project_of"/>
                                            <field name="project_name"/>
                                            <field name="location"/>
                                            <field name="start_month_year"/>
                                            <field name="end_month_year"/>
                                            <field name="project_feature"/>
                                            <field name="role"/>
                                            <field name="responsibility_activity"/>
                                            <field name="emp_id" invisible="1"/>
                                            <field name="client_name"/>
                                            <field name="organization_id"/>
                                            <field name="compute_project"/>
                                            <field name="activity"/>
                                            <field name="other_activity"/>
                                            <field name="emp_project_id" invisible="1"/>
                                        </tree>
                                    </field>
                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px; width:5%;">14</td>
                                <td style="border: 1px solid #000000; padding:5px; width:30%;">
                                    Certification
                                </td>
                                <td style="border: 1px solid #000000; padding:5px; width:65%;">
                                    I, the undersigned, certify that to the best of my knowledge and belief,
                                    this cv correctly describes me, my qualifications and my experience. I
                                    understand that any willfull misstatement described herein may lead to my
                                    disqualification or dismissal, if engaged.

                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px;" colspan="2">
                                    Signature:
                                    <field name="name" readonly='1'/>
                                </td>
                                <td style="border: 1px solid #000000; padding:5px;">
                                    Signature:

                                </td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px;" colspan="2">
                                    Date: <field name="write_date"/>
                                </td>
                                <td style="border: 1px solid #000000;"></td>

                            </tr>

                            <tr>
                                <td style="border: 1px solid #000000; padding:5px;" colspan="2">
                                    Name of Staff Member:
                                    <field name="name" readonly='1'/>
                                </td>
                                <td style="border: 1px solid #000000; padding:5px;">
                                    Name of Authorized Signatory:
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </form>
            </field>
        </record>


        <record id="hr_employee_generate_cv_search_view" model="ir.ui.view">
            <field name="name">Generate CV Search View</field>
            <field name="model">hr.employee</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="division"/>
                    <field name="section"/>
                    <field name="practise"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="hr_employee_generate_cv_action_window" model="ir.actions.act_window">
            <field name="name">Generate CV</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_employee_generate_cv_tree_view"/>
            <field name="search_view_id" ref="hr_employee_generate_cv_search_view"/>
        </record>
        <!-- Top menu item -->
        <menuitem id="hr_employee_generate_cv2_menu_root"
                  name="Generate CV"
                  parent="hr.menu_hr_root"
                  sequence="99"/>

        <menuitem id="hr_employee_generate_cv3_menu"
                  name="Generate CV"
                  action="hr_employee_generate_cv_action_window"
                  parent="hr_employee_generate_cv2_menu_root"
                  groups="kw_generate_cv.generate_cv_manager_group"
                  sequence="1"/>

    </data>
</odoo>
