<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cv_mapping_apply_mail_template" model="mail.template">
            <field name="name">CV Mapping Apply Notification</field>
            <field name="model_id" ref="kw_generate_cv.model_hr_cv_mapping" />            
            <field name="email_from">${object.create_uid.email}</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <field name="email_cc">${ctx['mail_cc']}</field>
            <field name="subject">CV Request Apply | Notification</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">
                                            Hi Team,
                                        </span>
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        A request for CV has been raised by <strong>${object.create_uid.name}</strong> for <strong>${object.project.name}</strong>, Work Order No - <strong>${object.project.code}</strong> . Please find the criteria below.
                                    </p>
                                    <table style="border-collapse: collapse;font-size: 16px;font-family:Segoe UI; color: #454748; width: 100%; margin-top:3rem;" border="1">
                                        <tr align="middle" style="background-color: #F1F1F1;" height="35px;">
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">SL No.</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Position</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Qualification</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Certification (If Any)</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">Exp</th>
                                            <th style="color:#676767;border-bottom: 1px solid #ebe5e5;">No. Of Resources</th>
                                        </tr>
                                            % for obj in ctx.get('object'):
                                            <tr align="middle">
                                                <td width="25%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${loop.index}
                                                </td>
                                                <td width="25%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                                    ${obj.job_id.name}
                                                </td>
                                                <td cv_mapping_apply_mail_templatewidth="20%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;">
                                                    ${ctx['qualification']}
                                                </td>
                                                <td width="15%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;">
                                                    ${ctx['professional']}
                                                </td>
                                                <td width="15%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;">
                                                    ${obj.min_exp_year}
                                                </td>
                                                <td width="15%" style="color:#167b9e;border-bottom: 1px solid #ebe5e5;">
                                                    ${obj.no_of_resources}
                                                </td>
                                            </tr>
                                            % endfor
                                    </table>
                                </div>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please log into the Tendrils to see details.
                                    </p>
                                    <hr/>
                                    <p style="color: #676767;line-height: 170%;margin: 10px 0 0 0;font-size: 16px;">
                                        This is a system generated mail. Please do not reply to this email.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>
            </field>
        </record>
