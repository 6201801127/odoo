<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_skill_assessment_dynamic_workflow_main" model="odoo.workflow">
            <field name="name">Skill Question Set Configuration</field>
            <field name="activities_add" eval="True"/>
            <field name="followers_add" eval="False"/>
            <field name="mail_thread_add" eval="True"/>
            <field name="remove_default_attrs_mod" eval="False"/>
            <field name="model_id" ref="kw_skill_assessment.model_kw_skill_question_set_config"/>
        </record>

        <record id="kw_skill_assessment_dynamic_workflow_node1" model="odoo.workflow.node">
            <field name="name">Draft</field>
            <field name="workflow_id" ref="kw_skill_assessment_dynamic_workflow_main"/>
            <field name="node_name">1</field>
            <field name="sequence" eval="1"/>
            <field name="is_visible" eval="True"/>
            <field name="flow_start" eval="True"/>
        </record>

        <record id="kw_skill_assessment_dynamic_workflow_node2" model="odoo.workflow.node">
            <field name="name">Published</field>
            <field name="workflow_id" ref="kw_skill_assessment_dynamic_workflow_main"/>
            <field name="node_name">2</field>
            <field name="sequence" eval="2"/>
            <field name="is_visible" eval="True"/>
        </record>

        <record id="kw_skill_assessment_dynamic_workflow_button_publish" model="odoo.workflow.node.button">
            <field name="sequence" eval="1"/>
            <field name="workflow_id" ref="kw_skill_assessment_dynamic_workflow_main"/>
            <field name="name">Publish</field>
            <field name="node_id" ref="kw_skill_assessment_dynamic_workflow_node2"/>
            <field name="is_highlight" eval="True"/>
            <field name="custom_domain" eval="True"/>
            <field name="btn_hide_domain" eval="[('state', '=', '2')]"/>
            <field name="condition_code">
result = True
            </field>
            <field name="action_type">code</field>
            <field name="code">
form_view_id = env.ref("kw_skill_assessment.kw_skill_assessment_confirmation_view_form1").id
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'kw_skill_question_set_config',
    'view_mode': 'form',
    'view_type': 'form',
    'res_id': obj.id,
    'view_id': form_view_id,
    'target': 'new',
    'domain': [('id', '=', obj.id)]
}
            </field>
        </record>

        <record id="kw_skill_assessment_dynamic_workflow_button_un_publish" model="odoo.workflow.node.button">
            <field name="sequence" eval="1"/>
            <field name="workflow_id" ref="kw_skill_assessment_dynamic_workflow_main"/>
            <field name="name">Draft</field>
            <field name="node_id" ref="kw_skill_assessment_dynamic_workflow_node1"/>
            <field name="is_highlight" eval="True"/>
            <field name="custom_domain" eval="True"/>
            <field name="btn_hide_domain" eval="[('state', '=', '1')]"/>
            <field name="condition_code">
result = True
            </field>
            <field name="action_type">code</field>
            <field name="code">
form_view_id = env.ref("kw_skill_assessment.kw_skill_assessment_confirmation_view_form2").id
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'kw_skill_question_set_config',
    'view_mode': 'form',
    'view_type': 'form',
    'res_id': obj.id,
    'view_id': form_view_id,
    'target': 'new',
    'domain': [('id', '=', obj.id)]
}
            </field>
        </record>

    </data>
</odoo>

