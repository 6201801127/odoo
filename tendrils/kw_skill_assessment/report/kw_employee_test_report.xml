<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_employee_skill_index_report_tree" model="ir.ui.view">
            <field name="name">view.kw_employee_skill_index_report.tree</field>
            <field name="model">kw_employee_skill_index_report</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_employee_skill_index_report_tree" create="false" delete="false" edit="false">
                    <field name="employee_name" />
                    <field name="designation" />
                    <field name="department" />
                    <field name="skill_category" />
                    <field name="skill" />
                    <field name="question_set" />
                    <field name="test_date" />
                    <field name="skill_score" />
                    <field name="time_taken" />
                    <field name="total_mark" />
                    <field name="total_mark_obtained" />
                    <field name="percentage_scored" />
                    <button class="btn btn-info" string='View Details' name="view_answer_master_details" type="object"/>
                </tree>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_kw_employee_skill_index_report_search" model="ir.ui.view">
            <field name="name">view.kw_employee_skill_index_report.search</field>
            <field name="model">kw_employee_skill_index_report</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="employee_name" />
                    <!-- <field name="department" /> -->
                    <field name="designation" />
                    <field name="skill_category" />
                    <field name="skill" />

                </search>
            </field>
        </record>

        <record id="view_kw_employee_skill_index_report_pivot" model="ir.ui.view">
            <field name="name">view.kw_employee_skill_index_report.pivot</field>
            <field name="model">kw_employee_skill_index_report</field>
            <field name="arch" type="xml">
                <pivot string="Employee Skill Index Report" display_quantity="true">
                    <field name="employee_name" type="row"/>
                    <field name="skill" type="col"/>
                    <!-- <field name="percentage_scored"/> -->
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="view_kw_employee_skill_index_report_graph">
            <field name="name">view.kw_employee_skill_index_report.graph</field>
            <field name="model">kw_employee_skill_index_report</field>
            <field name="arch" type="xml">
                <graph string="Skill Index graph" type="bar" stacked="False">
                    <field name="employee_name" string="Employee Name" />
                    <field name="skill" string="Skill" />
                    <field name="percentage_scored" string="Percentage Scored" type="measure" />
                </graph>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="action_kw_employee_skill_index_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Skill Index Report</field>
            <field name="res_model">kw_employee_skill_index_report</field>
            <field name="view_mode">tree,pivot,graph</field>
            <field name="search_view_id" ref="view_kw_employee_skill_index_report_search" />
        </record>
    </data>
</odoo>
