<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for "model" -->
        <record id="view_kw_skill_no_of_questions_tree" model="ir.ui.view">
            <field name="name">view.kw_skill_no_of_questions.tree</field>
            <field name="model">kw_skill_no_of_questions</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="kw_skill_no_of_questions_tree" create="true" delete="true" edit="true">
                    <field name="question_type" string="Question Type" options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
                    <field name="quest_config" string="Question Set Config" options="{'no_open': True,'no_create': 1, 'no_edit': 1}" />
                    <field name="no_of_question" />
                </tree>
            </field>
        </record>

        <!-- Form view for "model" -->
        <record id="view_kw_skill_no_of_questions_form" model="ir.ui.view">
            <field name="name">view.kw_skill_no_of_questions.form</field>
            <field name="model">kw_skill_no_of_questions</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="kw_skill_no_of_questions_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="question_type" string="Question Type" options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
                                <field name="quest_config" string="Question Set Config" options="{'no_open': True,'no_create': 1, 'no_edit': 1}" />
                            </group>
                            <group>
                                <field name="no_of_question" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="action_model_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Skill No of Questions</field>
            <field name="res_model">kw_skill_no_of_questions</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
        </record>
    </data>
</odoo>
