<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_question_bank_action_window" model="ir.actions.act_window">
            <field name="name">Question Bank</field>
            <field name="res_model">kw_skill_question_bank</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a Question bank ...
                </p>
            </field>
        </record>
        
        <!-- kw_ques_bank tree view -->
        <record id="kw_ques_bank_view_tree" model="ir.ui.view">
            <field name="name">kw_ques_bank.view.tree</field>
            <field name="model">kw_skill_question_bank</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <!-- Add your fields here -->
                    <field name="quesbank_rel" string="Skill"/>
                    <field name="difficulty_level"/>
                    <field name="question" />
                    <field name="option_a" />
                    <field name="option_b" />
                    <field name="option_c" />
                    <field name="option_d" />
                    <field name="correct_ans" />
                    <field name="justification" />
                </tree>
            </field>
        </record>

        <!-- kw_ques_bank form view -->
        <record id="kw_ques_bank_view_form" model="ir.ui.view">
            <field name="name">kw_ques_bank.view.form</field>
            <field name="model">kw_skill_question_bank</field>
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <field name="difficulty_level" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                        <group>
                            <field name="question" />
                        </group>
                        <group>
                            <field name="option_a" />
                            <field name="option_b" />
                            <field name="option_c" />
                            <field name="option_d" />
                        </group>
                        <group>
                            <field name="correct_ans" />
                            <field name="justification" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_ques_bank_view_search" model="ir.ui.view">
            <field name="name">kw_ques_bank.view.search</field>
            <field name="model">kw_skill_question_bank</field>
            <field name="arch" type="xml">
                <search>

                </search>
            </field>
        </record>
    </data>
</odoo>