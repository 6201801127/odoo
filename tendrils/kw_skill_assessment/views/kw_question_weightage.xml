<odoo>
	<data>
		<!-- kw Question weightage master actions window :Opening -->
		<record id="kw_question_weightage_master_action_window" model="ir.actions.act_window">
			<field name="name">Question Weightage Master</field>
			<field name="res_model">kw_skill_question_weightage</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Add a skill type ...
				</p>
			</field>
		</record>
		<!-- kw Question weightage master actions window :Ending -->

		<!-- explicit tree view of kw Question weightage master : Opening -->
		<record model="ir.ui.view" id="kw_question_weightage_master_list">
			<field name="name">Question Weightage Master Tree</field>
			<field name="model">kw_skill_question_weightage</field>
			<field name="arch" type="xml">
				<tree delete="false">
					<field name="name" string="Name" />
					<field name="weightage" string="Weightage" />
					<field name="duration" string="Duration (in seconds)" />
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view of kw Question weightage master : Ending -->

		<!-- explicit Form view of kw Question weightage master : Opening -->
		<record id="kw_question_weightage_master_form_view" model="ir.ui.view">
			<field name="name">Question Weightage Master Form</field>
			<field name="model">kw_skill_question_weightage</field>
			<field name="arch" type="xml">
				<form delete="false">
					<sheet>
						<group>
							<group>
								<field name="name" string="Name" options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
								<field name="code" required="1"/>
								<field name="weightage" options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
								<field name="duration" string="Duration (in seconds)"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- explicit form view of kw Question weightage master : Ending -->
	</data>
</odoo>