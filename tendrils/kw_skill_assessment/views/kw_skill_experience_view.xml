<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_skill_experience_action_window" model="ir.actions.act_window">
            <field name="name">Experience Master</field>
            <field name="res_model">kw_skill_experience_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new experience..
                </p>
            </field>
        </record>

        <!--  tree view -->
        <record id="kw_skill_experience_view_tree" model="ir.ui.view">
            <field name="name">kw_skill_experience.view.tree</field>
            <field name="model">kw_skill_experience_master</field>
            <field name="arch" type="xml">
                <tree delete="false"> 
                    <field name="name" />
                    <field name="min_exp" />
                    <field name="max_exp" />
                    <field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="kw_skill_experience_view_form" model="ir.ui.view">
            <field name="name">kw_skill_experience.view.form</field>
            <field name="model">kw_skill_experience_master</field>
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="min_exp"/>
                                <field name="max_exp"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



    </data>
</odoo>
