<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_skill_configuration_email_template" model="mail.template">
            <field name="name">Skill Configuration E-mail template</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Skill Assessment added for ${object.name}</field>
            <field name="model_id" ref="kw_skill_assessment.model_kw_skill_question_set_config"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0" >
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Hello</span>
                                        ${ctx['username']},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Please be informed that a new Assessment is available now in the Annual Skill Assessment for FY ${object.fiscal_year}.
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            Available Test
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#676767;padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            <u>Skill Assessment Period:</u>
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            Start Date
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${format_tz(object.create_date, format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            End Date
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${format_tz(object.fiscal_year_last_date, format='%d-%b-%Y')}
                                        </td>
                                    </tr>
                                </table>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Note:
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       ${object.mail_note}
                                    </p>
                                </div>
                            </td>
                        </tr>

                    </table>
                ]]>
                        
            </field>
       </record>
    </data>
</odoo>