<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_skill_group_master_action_window" model="ir.actions.act_window">
            <field name="name">Skill Group Master</field>
            <field name="res_model">kw_skill_group_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a skill group ...
                </p>
            </field>
        </record>

        <!-- kw_master_skill_group tree view -->
        <record id="kw_master_skill_group_view_tree" model="ir.ui.view">
            <field name="name">kw_master_skill_group.view.tree</field>
            <field name="model">kw_skill_group_master</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <!-- Add your fields here -->
                    <field name="name" />
                    <field name="description" />
                    <field name="skills" />
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <!-- kw_master_skill_group form view -->
        <record id="kw_master_skill_group_form" model="ir.ui.view">
            <field name="name">kw_master_skill_group.view.form</field>
            <field name="model">kw_skill_group_master</field>
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name" />
                            <field name="description" />
                            <field name="skills" options="{'no_open': True,'no_create':True,'no_edit':True}" >
                                <tree>
                                    <field name="name" string="Name" readonly='1' />
                                    <field name="description" string="Description" readonly='1'/>
                                    <field name="skill_type" string="Skill Category" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/> 
                                    <field name="employee_id" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="name" string="Name" readonly='1'/>
                                            <field name="description" string="Description" readonly='1'/>
                                        </group>
                                        <group>    
                                            <field name="skill_type" string="Skill Category" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/> 
                                            <field name="employee_id" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        

    </data>
</odoo>
