<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="kw_skill_assessment_index2" name="Skill Index Page">
			<t t-call="website.layout">
				<header>
					<nav class="navbar bg-blue text-light">
						<div class="container">
							<div class="container-fluid">
								<div class="navbar-header">
									<img src="/kw_skill_assessment/static/src/imgs/logo.png" alt="logo"
									     class="pull-left"/>
									<h1 class="ml-mt pull-left">
										<a class="navbar-brand" href="javascript:void(0);">
											Welcome to
											<t t-if="question_set.assessment_type == 'training'">
												<strong class="text-capitalize"><t t-esc="question_set.name"/></strong>
												<br/>
												<t t-if="message">
													<strong class="text-capitalize"><t t-esc="message"/></strong>
												</t>
											</t>
											<t t-if="question_set.assessment_type == 'Induction'">
												<strong class="text-capitalize"><t t-esc="question_set.name"/></strong>
												<br/>
												<t t-if="message">
													<strong class="text-capitalize"><t t-esc="message"/></strong>
												</t>
											</t>
											<t t-else="">
												<strong>Skill Assessment Portal</strong>
											</t>
										</a>
									</h1>
								</div>
							</div>
						</div>
					</nav>
				</header>
				<div class="container">
					<div class="checkbox-section mt-2">
						<div class="row">
							<div class="col-lg-6">
								<div class="checkbox checkbox-primary checkbox-inline pull-left">
									<input id="checkbox2" type="checkbox" checked=""/>
									<label for="checkbox2">Multiple choice questions.</label>
								</div>

								<div class="checkbox checkbox-primary checkbox-inline pull-left ml-1">
									<input id="checkbox3" type="checkbox" checked=""/>
									<label for="checkbox3">No Negative marking.</label>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="checkbox checkbox-primary checkbox-inline pull-right ">
									<t t-set="duration_dict" t-value="{'900':'15 Minutes','1800': '30 Minutes','2700':'45 Minutes','3600':'1 Hour',
                                                                            '5400': '1 hour 30 Minutes','7200':'2 Hours','10800':'3 Hours'}"/>
									<input id="checkbox5" type="checkbox" checked=""/>
									<label for="checkbox5">
										<strong>Duration
											<t t-esc="duration_dict[question_set.duration]"/>
										</strong>
									</label>
								</div>
								<div class="checkbox checkbox-primary checkbox-inline pull-right mr-1 ">
									<input id="checkbox4" type="checkbox" checked=""/>
									<label for="checkbox4">
										<strong>Total Mark
											<t t-esc="question_set.total_marks"/>
										</strong>
									</label>
								</div>
							</div>
						</div>
					</div>
					<div class="mt-5 markdivision-sec">
						<div class="row" t-if="question_set.add_questions">
							<div class="col-lg-6 mt-2">
								<t t-if="question_set.assessment_type == 'training'">
								</t>
								<t t-if="question_set.assessment_type == 'Induction'">
								</t>
								<t t-else="">
									<h3 class="h3 mb-4 text-capitalize"><b> <t t-esc="question_set.name"/></b></h3>
								</t>
                               
								<div class="d-inline-block smile-emoji" t-foreach="question_set.add_questions"
								     t-as="ques">
									<t t-if="ques.question_type.name == 'Simple'">
										<i class="fa fa-smile-o text-green"/>
									</t>
									<t t-if="ques.question_type.name == 'Average'">
										<i class="fa fa-meh-o text-lightblue"/>
									</t>
									<t t-if="ques.question_type.name == 'Complex'">
										<i class="fa fa-frown-o text-orange"/>
									</t>
									<p class="text-muted d-inline-block">
										<strong class="text-dark">
											<t t-esc="ques.no_of_question"/>
										</strong>
										<t t-if="question_set.assessment_type != 'Induction'">
											<t t-esc="ques.question_type.name"/>
										</t>
										question<t t-if="ques.no_of_question>1">s</t>
										<strong>
											<t t-esc="ques.question_type.weightage"/>
										</strong>
										mark each
									</p>
								</div>

								<div class="  click-btn mt-4">
									<h3 class="text-blue">Best of Luck</h3>
									<p class="mt-4">
										<a type="button" class="btn bg-primary btn-small navbar-btn btn-padding"
										   t-att-href="'/take_test?userid='+str(request.env.user.id)+'&amp;ques_set_id='+str(question_set.id)">
											Let's Start
										</a>
										the Assessment.
									</p>
								</div>
								<div class=" note-section mt-2 border-dash ">
									<p class="mt-2 text-red">
										<strong class="mr-1 text-red">NOTE:</strong>
										Don't refresh the page until you have submitted!
									</p>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="guidelines-section">
									<h3>
										<img src="/kw_skill_assessment/static/src/imgs/guide.png" alt="guide-img"/>
										Guideline:
									</h3>
									<ul class="mt-3">
										<li>Select only one correct answer out of 4 options.</li>
										<li>Don't click "Refresh" or "Back " button in URL.</li>
										<li>Don't shift/open to any other browser. Switching to other browser may reset
											your selected question/answer.
										</li>
										<li>Please click on the "mark of review" for the answer your are not sure.</li>
										<li>Status of your attempt is mentioned at right pane with color codes.</li>
										<li>The "End Test" option is available at the last question page only.</li>
										<li>Referring answers from any print or electronic media or discussing with
											others are strictly prohibited during the assessment.
										</li>
									</ul>

								</div>

							</div>
						</div>
					</div>


				</div>
			</t>
		</template>
		<template id="assets_frontend_skill_assesment_index" name="skill_index_page_assets"
		          inherit_id="kw_skill_assessment.kw_skill_assessment_index2">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/kw_skill_assessment/static/src/css/skill_test_index_page.css"/>
			</xpath>
		</template>
	</data>
</odoo>
