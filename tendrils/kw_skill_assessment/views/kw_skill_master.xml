<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_skill_master_action_window" model="ir.actions.act_window">
            <field name="name">Skill Master</field>
            <field name="res_model">kw_skill_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name='domain'>[('skill_type','not in',['Induction','induction'])]</field>
        </record>
        
        <!-- kw_master_skill tree view -->
        <record id="kwmaster_skill_view_tree" model="ir.ui.view">
            <field name="name">kw_master_skill.view.tree</field>
            <field name="model">kw_skill_master</field>
            <field name="arch" type="xml">
                <tree delete="true">
                    <!-- Add your fields here -->
                    <field name="name" />
                    <field name="description" />
                    <field name="skill_type" />
                    <field name="employee_id" widget="many2many_tags" groups="kw_skill_assessment.group_kw_skill_assessment_manager"/>
                    <field name="active" widget="boolean_toggle" groups="kw_skill_assessment.group_kw_skill_assessment_manager"/>
                </tree>
            </field>
        </record>

        <!-- kw_master_skill form view -->
        <record id="kw_master_skill_view_form" model="ir.ui.view">
            <field name="name">kw_master_skill.view.form</field>
            <field name="model">kw_skill_master</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" icon="fa-code" type="object" name="check_duplicate_skill">
                                <span class="o_stat_text font-weight-bold">
                                    Skill Correction
                                </span>
                            </button>
                            <button name="toggle_active" type="object" groups="kw_skill_assessment.group_kw_skill_assessment_manager" class="oe_stat_button"
                                icon="fa-archive" confirm="Are you sure to Archive the Duplicate Skill?">
                                <field name="active" widget="boolean_button"
                                options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                 <field name="name" string="Name" />
                                <field name="description" string="Description"/>
                            </group>
                            <group>
                                <field name="skill_type" string="Skill Category" options="{'no_open': True,'no_create':True,'no_edit':True}"/> 
                                <field name="employee_id" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="duplicate_skill_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
    
    <data>
        <!-- kw_master_skill tree view -->
        <record id="kw_skill_correction_log_view_tree" model="ir.ui.view">
            <field name="name">kw_skill_correction_log_tree_view</field>
            <field name="model">kw_skill_correction_log</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="model_id"/>
                    <field name="rec_id"/>
                    <field name="old_value"/>
                    <field name="new_value"/>
                </tree>
            </field>
        </record>

        <!-- kw_master_skill form view -->
        <record id="kw_skill_correction_log_form" model="ir.ui.view">
            <field name="name">kw_skill_correction_log_form_view</field>
            <field name="model">kw_skill_correction_log</field>
            <field name="arch" type="xml">
                <form string="" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="model_id"/>
                                <field name="rec_id"/>
                                <field name="old_value"/>
                                <field name="new_value"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_skill_correction_log_action_window" model="ir.actions.act_window">
            <field name="name">Skill Correction</field>
            <field name="res_model">kw_skill_correction_log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record id="timesheet_resource_skill_action" model="ir.actions.act_window">
            <field name="name">Resource Skills</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update_resource_skill</field>
            <field name="view_mode">tree</field>
			<field name="domain">[]</field>
        </record>

        <record id="generate_resource_cv_duplicate_action_window" model="ir.actions.act_window">
            <field name="name">Generate CV</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
			<field name="domain">[('employement_type.code','!=','O')]</field>
            <field name="view_id" ref="kw_generate_cv.hr_employee_generate_cv_tree_view"/>
            <field name="search_view_id" ref="kw_generate_cv.hr_employee_generate_cv_search_view"/>
        </record>

         <!-- Talent Pool action window for skill assessment -->
        <record id="sbu_bench_resource_skill_action" model="ir.actions.act_window">
            <field name="name">Talent Pool Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sbu_bench_resource</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
        </record>
        
        <record id="update_resource_skill_by_lnk_action" model="ir.actions.act_window">
            <field name="name">Update Resource Skills</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update_resource_skill</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>
