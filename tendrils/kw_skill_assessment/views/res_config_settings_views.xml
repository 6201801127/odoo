<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_skill_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.kw_skill</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="70" />
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Kwantify Skill Assessment" string="Tendrils Skill Assessment" data-key="kw_skill_assessment" groups="hr.group_hr_manager,base.group_no_one">
					<h2>
						Skill Assessment
					</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-12 o_setting_box" title="Employee Web Service URL">
							<div class="o_setting_right_pane">
								<span class="o_form_label">
									Notify to User
								</span>
								<div class="text-muted">
									Notification for Assessment Start by User.
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="skill_manager_emp" string="Employee"  class="col-3 col-lg-3 o_light_label" />
										<field name="skill_manager_emp" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
									</div>
								</div>
								<div class="row">
                                    <label string="Induction assessment enabled" for="induction_assessment" class="col-lg-3"/>
                                    <field name="induction_assessment"/>
                                </div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
	<record id="kw_skill_assessment_config_action_window" model="ir.actions.act_window">
		<field name="name">Skill Settings</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.config.settings</field>
		<field name="view_mode">form</field>
		<field name="target">inline</field>
		<field name="context">{'module' : 'kw_skill_assessment'}</field>
	</record>
    <menuitem id="kw_skill_settings_menu"
                  name="Skill Settings"
                  parent="kw_skill_type_parent_menu"
                  action="kw_skill_assessment_config_action_window"
				  groups = "group_kw_skill_assessment_manager"
				  active='false'
                  sequence=""/>
</odoo>
