<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--  tree view -->
        <record id="kw_skill_date_configuration_view_tree" model="ir.ui.view">
            <field name="name">kw_skill_date_configuration.view.tree</field>
            <field name="model">kw_skill_date_configuration</field>
            <field name="arch" type="xml">
                <tree duplicate="false"> 
                    <field name="user_from_date" string='From Date (User)'/>
                    <field name="user_to_date" string='To Date (User)'/>
                    <field name="ra_from_date" string='From Date (RA)'/>
                    <field name="ra_to_date" string='To Date (RA)'/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="kw_skill_date_configuration_view_form" model="ir.ui.view">
            <field name="name">kw_skill_date_configuration.view.form</field>
            <field name="model">kw_skill_date_configuration</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <sheet>
                        <group>
                            <group string='Users'>
                                <field name="user_from_date"/>
                                <field name="user_to_date"/>
                            </group>
                            <group string='RA'>
                                <field name="ra_from_date"/>
                                <field name="ra_to_date"/>
                            </group>
                            <group>
                                <button string='Send Notification' name="action_send_notification" type="object" class="btn-success"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_skill_date_configuration_action_window" model="ir.actions.act_window">
            <field name="name">Date Configuration</field>
            <field name="res_model">kw_skill_date_configuration</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

    </data>
</odoo>
