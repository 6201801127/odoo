<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_skill_assessment_confirmation_view_form1" model="ir.ui.view">
            <field name="name">kw_skill_question_set_config.view.form1</field>
            <field name="model">kw_skill_question_set_config</field>
            <field name="arch" type="xml">
               <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                            Are you sure to publish and notify the user?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <button type="object" name="publish_test" class="btn-primary mr-2">Ok</button>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="kw_skill_assessment_confirmation_view_form2" model="ir.ui.view">
            <field name="name">kw_skill_question_set_config.view.form2</field>
            <field name="model">kw_skill_question_set_config</field>
            <field name="arch" type="xml">
               <form>
                    <script>
                        $(document).ready(function(){
                            $(".modal-title").show();
                        });
                    </script>
                    <div class="row">
                        <div class="col-sm-12 mx-auto">
                            <p class="h6 font-weight-light text-left text-justify">
                            Are you sure to make it draft?
                            </p>
                        </div>
                    </div>
                    <footer>
                        <button type="object" name="unpublish_test" class="btn-primary mr-2">Ok</button>
                        <button string="Cancel" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        

    </data>
</odoo>
