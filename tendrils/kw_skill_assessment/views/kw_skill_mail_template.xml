<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="kw_skill_email_template" model="mail.template">
          <field name="name">Skill E-mail template</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">Assessment Status by ${object.user_id.name} For ${object.set_config_id.name}</field>
          <field name="email_to">${object.get_manager_groups_users_email() or ''}</field>
          <field name="model_id" ref="kw_skill_assessment.model_kw_skill_answer_master"/>
          <field name="auto_delete" eval="False"/>
            <field name="body_html" >
                <![CDATA[
                    <table border="0" >
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Hi, Assessment has been started.
                                    </p>
                                </div>
                                <table border="0" style="border-collapse: collapse;font-size: 16px;">
                                    <tr>
                                        <td style="padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            Name
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.user_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            Assessment
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${object.set_config_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left: 20px;border-bottom: 1px solid #ebe5e5;height: 34px;"
                                            width="200px">
                                            Start Date Time
                                        </td>
                                        <td style="color:#167b9e;border-bottom: 1px solid #ebe5e5;height: 34px;">
                                            ${format_tz(object.create_date, format='%d-%b-%Y %H:%M:%S')}
                                        </td>
                                    </tr>
                                </table>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Note:
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                       This is a system generated mail. Kindly do not reply to this mail.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                ]]>    
            </field>
       </record>
    </data>
</odoo>