<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="kw_skill_assessment_test" name="Kwantify Skill Assessment">
			<t t-call="website.layout">
				<!-- Main Navigation -->
				<nav class="navbar navbar-expand-lg navbar-dark primary-color">
					<div class="container-fluid">
						<div class="row align-items-center full-width">
							<div class="col-sm-6">
								<t t-if="skill_set.assessment_type == 'training'">
									<p class="h4 mb-0 text-capitalize" t-esc="skill_set.name" />
								</t>
								<t t-if="skill_set.assessment_type == 'Induction'">
									<p class="h4 mb-0 text-capitalize" t-esc="skill_set.name" />
								</t>
								<t t-else="">
									<p class="h4 mb-0">
										Skill Assessment
									</p>
								</t>
							</div>
							<div class="col-sm-6">
								<div class="float-right logedin-user">
									<img t-attf-src="/kw_skill_assessment/static/src/imgs/user.png" t-att-alt="employee.name" />
									<div class="info">
										<p class="m-0 font-weight-bold">
											<strong>
												<span t-esc="employee.name" />
											</strong>
										</p>
										<p class="m-0">
											<small>
												<span t-esc="employee.job_id.name" />
											</small>
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</nav>
				<div class="sub-header">
					<div class="container-fluid px-4 py-2">
						<div class="row align-items-center full-width">
							<div class="col-sm-6">
								<input type="hidden" id="skill_set_id" t-att-value="skill_set.id" />
								<input type="hidden" id="kw_skill_answer_id" t-att-value="answer_master_id" />
								<input type="hidden" id="kw_start_time" />
								<p class="m-0 h3">
									<span t-esc="skill_set.skill.name" />
								</p>
								<p class="m-0">
									<small>
										<span t-esc="skill_set.skill_types.skill_type" />
									</small>
								</p>
							</div>
							<div class="col-sm-6 text-right text-danger">
								<p class="m-0">
									<small class="font-weight-bold">
										Time Left (H:M:S)
									</small>
								</p>
								<div class="m-0 h5" id="time_left" t-att-value="skill_set.duration" />
							</div>
						</div>
					</div>
				</div>
				<div class="question-wrapper">
					<div class="container-fluid">
						<div class="row">
							<div class="col-sm-9">
								<div class="p-4" id="question_block">
									<div class="h3 d-flex q_question_counter">
										Q
										<span class="number" />
										. &amp;nbsp;
										<div class="q_question h4" />
									</div>
									<div class="px-4 pt-2">
										<div class="custom-control custom-radio mb-2 ans-opt">
											<input type="radio" class="custom-control-input" id="option1" name="option" value="A" />
											<label class="custom-control-label q_option_a h4 font-weight-light" for="option1" />
										</div>
										<div class="custom-control custom-radio mb-2 ans-opt">
											<input type="radio" class="custom-control-input" id="option2" name="option" value="B" />
											<label class="custom-control-label q_option_b h4 font-weight-light" for="option2" />
										</div>
										<div class="custom-control custom-radio mb-2 ans-opt">
											<input type="radio" class="custom-control-input" id="option3" name="option" value="C" />
											<label class="custom-control-label q_option_c h4 font-weight-light" for="option3" />
										</div>
										<div class="custom-control custom-radio ans-opt">
											<input type="radio" class="custom-control-input" id="option4" name="option" value="D" />
											<label class="custom-control-label q_option_d h4 font-weight-light" for="option4" />
										</div>
									</div>
								</div>
								<div class="row navbuttons d-flex justify-content-between">
									<div class="col-sm-3 text-left ml-5">
										<div class="btn-group btn-group-sm mx-auto" role="group" aria-label="Basic example">
											<button type="button" class="btn btn-primary btn-lg nb font-weight-bold" id="mark_review">
												Mark Review
											</button>
										</div>
									</div>
									<div class="col-sm-5 text-center p-0">
										&amp;nbsp;
									</div>
									<div class="col-sm-3 text-right">
										<button type="button" class="btn btn-warning btn-lg nb w-90 font-weight-bold" id="quest_prev">
											Prev
										</button>
										<button type="button" class="btn btn-warning btn-lg nb w-90 font-weight-bold" id="quest_next">
											Next
										</button>
										<button type="submit" class="btn btn-success btn-lg nb w-90 font-weight-bold" id="submit">
											Submit
										</button>
									</div>
								</div>
							</div>
							<div class="col-sm-3">
								<div class="questionList">
									<div class="q-body">
										<div class="sl-list" id="quest_buttons">
											<t t-foreach="questions" t-as="quest">
												<button type="button" t-att-qid="quest" t-att-id="quest_index+1" class="q_index">
													<t t-esc="quest_index+1" />
												</button>
											</t>
										</div>
										<div class="legend">
											<label>
												Not Attended
											</label>
											<label class="attended">
												Attended
											</label>
											<label class="review">
												Mark as Review
											</label>
										</div>
										<div class="col col-sm-12 text-center">
												<p class="text-uppercase text-danger font-weight-normal">Don't refresh or navigate from the screen.</p>
										</div>
									</div>
									<div class="q-footer">
										<div class="row align-items-center">
											<div class="col">
												<!-- <a href="#" id="modalHelp" data-toggle="modal" data-target="#help">HELP</a> -->
											</div>
											<div class="modal fade right" id="help" tabindex="-1" role="dialog" aria-labelledby="helplabel" aria-hidden="true" data-backdrop="false">
												<div class="modal-dialog modal-side modal-bottom-right" role="document">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="h5 modal-title" id="helplabel">
																HELP
															</h5>
															<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																<span aria-hidden="false">
																	&amp;times;
																</span>
															</button>
														</div>
														<div class="modal-body">
															<div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">
																<div class="card">
																	<div class="card-header" role="tab" id="headingOne1">
																		<a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true" aria-controls="collapseOne1">
																			<h5 class="mb-0 text-primary">
																				Content
																				<i class="pull-right font-weight-bold text-primary fa fa-angle-down rotate-icon" />
																			</h5>
																		</a>
																	</div>
																	<!-- Card body -->
																	<div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1" data-parent="#accordionEx">
																		<div class="card-body">
																		</div>
																	</div>
																</div>
																<div class="card">
																	<div class="card-header" role="tab" id="headingTwo2">
																		<a class="collapsed" data-toggle="collapse" data-parent="#accordionEx" href="#collapseTwo2" aria-expanded="false" aria-controls="collapseTwo2">
																			<h5 class="mb-0 text-primary">
																				Content
																				<i class="pull-right font-weight-bold text-primary fa fa-angle-down rotate-icon" />
																			</h5>
																		</a>
																	</div>
																	<div id="collapseTwo2" class="collapse" role="tabpanel" aria-labelledby="headingTwo2" data-parent="#accordionEx">
																		<div class="card-body">
																		</div>
																	</div>
																</div>
																<div class="card">
																	<div class="card-header" role="tab" id="headingThree3">
																		<a class="collapsed" data-toggle="collapse" data-parent="#accordionEx" href="#collapseThree3" aria-expanded="false" aria-controls="collapseThree3">
																			<h5 class="mb-0 text-primary">
																				Content
																				<i class="pull-right font-weight-bold text-primary fa fa-angle-down rotate-icon" />
																			</h5>
																		</a>
																	</div>
																	<div id="collapseThree3" class="collapse" role="tabpanel" aria-labelledby="headingThree3" data-parent="#accordionEx">
																		<div class="card-body">
																		</div>
																	</div>
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>
											<t t-if="skill_set.assessment_type == 'training'">
											</t>
											<t t-else="">
												<div class="col text-right">
													<a href="#" id="modalInstruction" data-toggle="modal" data-target="#instruction">
														INSTRUCTION
													</a>
												</div>
												<div class="modal fade right" id="instruction" tabindex="-1" role="dialog" aria-labelledby="instructionlabel" aria-hidden="true" data-backdrop="false">
													<div class="modal-dialog modal-side modal-bottom-right" role="document">
														<div class="modal-content">
															<div class="modal-header">
																<h5 class="h5 modal-title" id="instructionlabel">
																	Instruction
																</h5>
																<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																	<span aria-hidden="false">
																		&amp;times;
																	</span>
																</button>
															</div>
															<div class="modal-body">
																<span class="text-danger">
																	<strong>
																		<t t-esc="ques_instruction" />
																	</strong>
																</span>
																<p class="text-center h4">
																	<span class="badge badge-pill badge-danger p-2 infos">
																		&amp;nbsp;  Don't refresh the test page otherwise your test will be terminated!.
																	</span>
																</p>
															</div>
														</div>
													</div>
												</div>
											</t>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Main Navigation -->
			</t>
		</template>
		<template id="skill_assessment_assets" inherit_id="kw_skill_assessment.kw_skill_assessment_test">
			<xpath expr="." position="inside">
				<link href="/kwantify_theme/static/src/mdb/css/mdb.min.css" rel="stylesheet" />
				<link href="/kw_skill_assessment/static/src/css/front_style.css?v=12" rel="stylesheet" />
				<script type="text/javascript" src="kwantify_theme/static/src/mdb/js/mdb.min.js" />
				<script type="text/javascript" src="/kw_training/static/src/lib/sweetalert_new.js"/>
				<script type="text/javascript" src="/kw_skill_assessment/static/src/js/skill_test.js?v=13" />
			</xpath>
		</template>
	</data>
</odoo>
