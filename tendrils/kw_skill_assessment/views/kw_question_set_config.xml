<odoo>
	<data>
		<!-- kw question set config actions window :Opening -->

		<!-- kw question set config actions window :Ending -->

		<!-- explicit tree view of kw question set config : Opening -->
		<record model="ir.ui.view" id="kw_question_set_config_list">
			<field name="name">question.set.configuration.tree.view</field>
			<field name="model">kw_skill_question_set_config</field>
			<field name="arch" type="xml">
				<tree default_order="state desc,name asc" delete="false">
					<field name="name" string="Name"/>
					<field name="skill" string="Skill"/>
					<field name="skill_types" string="Skill Category"/>
					<field name="applicable_candidate" string="Applicable Candidate"/>
					<field name="frequency" string="Frequency"/>
					<!-- <field name="no_simple_questions" string="Simple Questions"></field>
					<field name="no_average_questions" string="Average Questions"></field>
					<field name="no_complex_questions" string="Complex Questions"></field> -->
					<field name="add_questions" string="Question Type" widget="many2many_tags"/>
					<field name="duration" string="Duration"/>
					<field name="total_questions" string="Total Questions"/>
					<field name="exam_given_count" string="No of Test Given"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
				</tree>
			</field>
		</record>
		<!-- explicit tree view of kw question set config : Ending -->

		<!-- explicit Form view of kw question set config : Opening -->
		<record id="kw_question_set_config_form_view" model="ir.ui.view">
			<field name="name">question.set.configuration.form.view</field>
			<field name="model">kw_skill_question_set_config</field>
			<field name="arch" type="xml">
				<form delete="false">
					<header>
						<field name="state" widget="statusbar" statusbar_visible="1,2" />
						<button string='Publish' name="publish_test" attrs="{'invisible':[('state','=','2')]}" class="btn font-weight-bold text-white" style="background-color: #108fbb;" type="object" />
                        <button string='Draft' attrs="{'invisible':[('state','=','1')]}" class="btn font-weight-bold text-white" style="background-color: #d83d2b;" type="object" name="unpublish_test" />

					</header>
					<sheet>
						<group>
							<group>
								<field name="fiscal_year" string="Fiscal Year" invisible="1" />
								<field name="set_config_id_readonly" invisible="1" />
								<field name="name" string="Name" attrs="{'readonly':[('set_config_id_readonly', '=',True)]}" />
								<field name="skill_types" string="Skill Category" attrs="{'readonly':['|',('assessment_type', '=', 'training'),('set_config_id_readonly', '=',True)]}" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
								<field name="skill" string="Skill" attrs="{'readonly':['|',('assessment_type', '=', 'training'),('set_config_id_readonly', '=',True)]}" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
								<field name="dept" widget="many2many_tags" attrs="{'readonly':['|',('set_config_id_readonly', '=',True),('assessment_type', '=', 'training')]}"
									options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
								<field name="question_bank_id" 
								attrs="{'required': [('assessment_type','=','training')],'invisible': [('assessment_type','=','skill')]}"
								options="{'no_open': True,'no_create': 1, 'no_edit': 1}"
								domain="[('type','=','training'),('skill_types','=',skill_types),('skill','=',skill)]"/>
								<field name="applicable_candidate" string="Applicable Candidate" attrs="{'readonly':['|',('set_config_id_readonly', '=',True),('assessment_type', '=', 'training')]}" widget="radio"/>
								<field name="select_deg" string="Designation"
								       attrs="{'readonly':['|',('set_config_id_readonly', '=',True),('assessment_type', '=', 'training')], 'invisible': [('applicable_candidate', 'in', ['1','3','4',False])], 'required': [('applicable_candidate','=','2')]}"
								       widget='many2many_tags'
								       options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
								<field name="select_individual" string="Individual"
								       attrs="{'invisible': [('applicable_candidate', 'in', ['1','2','4',False])], 'required': [('applicable_candidate','=','3')],'readonly':['|',('set_config_id_readonly', '=',True),('assessment_type', '=', 'training')]}"
								       widget='many2many_tags'
								       options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>
								<field name="experience_id" string="Experience" 
								attrs="{'readonly':['|',('set_config_id_readonly', '=',True),('assessment_type', '=', 'training')], 'invisible': [('applicable_candidate', 'in', ['1','2','3',False])], 'required': [('applicable_candidate','=','4')]}" 
								options="{'no_open': True,'no_create': 1, 'no_edit': 1}"/>

								<field name="frequency" string="Frequency" attrs="{'readonly':['|',('set_config_id_readonly', '=',True),('assessment_type', '=', 'training')]}"/>
								<field name="interval" attrs="{'invisible': [('frequency','in',['y','h','q','m','o','n'])]}"/>
								<field name="mail_note" />
							</group>
							
							<group>
								<!-- <field name="no_simple_questions" string="Simple Questions"></field>
								<field name="no_average_questions" string="Average Questions"></field>
								<field name="no_complex_questions" string="Complex Questions"></field> -->
								<field name="add_questions" string="Questions" attrs="{'readonly':[('set_config_id_readonly', '=',True)]}" >
									<tree editable="bottom">
										<field name="question_type" string="Question Type" options="{'no_open': True,'no_create': 1, 'no_edit': 1}" />
										<field name="no_of_question" string="Number Of Questions" />
									</tree>
								</field>
								<field name="simple_questions" readonly="1" />
								<field name="average_questions" readonly="1" />
								<field name="complex_questions" readonly="1" />
								<field name="duration" string="Duration" attrs="{'readonly':[('set_config_id_readonly', '=',True)]}"/>
								<field name="total_questions" string="Total Questions"/>
								<field name="total_marks" string="Total Marks"/>
								<field name="designation_id" attrs="{'invisible': 1}"/>
								<field name="question_type" attrs="{'invisible': 1}"/>
								<field name="frequency_val" attrs="{'invisible': 1}"/>
								<field name="expected_duration" string="Expected Duration (HH:MM:SS)" attrs="{'invisible': [('expected_duration', '=', False)]}"/>
							</group>
							<group>
								<field name="assessment_type" attrs="{'readonly':[('assessment_type', '=', 'training')],'required': [('assessment_type','=','training')],'invisible': [('assessment_type','=','skill')]}" />
								<field name="start_on" widget="datetime" attrs="{'required': [('assessment_type','=','training')],'invisible': [('assessment_type','=','skill')]}"/>
								<field name="expire_on" widget="datetime" attrs="{'required': [('assessment_type','=','training')],'invisible': [('assessment_type','=','skill')]}"/>
							</group>
						</group>
						<group> 
							<field name="instruction" string="Instructions" attrs="{'readonly':[('set_config_id_readonly', '=',True)]}" invisible="1"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- kw_skill_question_set_config search view -->
		

		<record id="kw_question_set_config_action_window" model="ir.actions.act_window">
			<field name="name">Manage Test</field>
			<field name="res_model">kw_skill_question_set_config</field>
			<field name="view_type">form</field>
			<field name="domain">['|','&amp;',('active', '=', False),('active', '!=', False),('assessment_type','=','skill')]</field>
			<field name="view_mode">tree,form</field>
			<field name="view_ids" eval="[(5, 0, 0),
			(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_question_set_config_list')}),
			(0, 0, {'view_mode': 'form', 'view_id': ref('kw_question_set_config_form_view')})]"/>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Add a question set configuration ...
				</p>
			</field>
		</record>

		<record id="kw_question_set_config_search" model="ir.ui.view">
			<field name="name">question.set.configuration.search.view</field>
			<field name="model">kw_skill_question_set_config</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" string=" Test Name"/>
					<field name="skill" string="Skill"/>
					<!-- <field name="skill_types" string="Skill Type"/> -->
					<group expand="0" string="Group By">
                        <filter name="all_candidate" string="All Candidate" domain="[('applicable_candidate','=','1')]"  help="Filter Test For All Candidates"/>
						 <filter name="individual_specific" string="Individual Specific " domain="[('applicable_candidate','=','3')]"  help="Filter Test For Designation Specific"/>
						 <filter name="designation_specific" string="Designation Specific " domain="[('applicable_candidate','=','2')]"  help="Filter Test For Designation Specific"/>
						 <filter name="experience_specific" string="Experience Specific " domain="[('applicable_candidate','=','4')]"  help="Filter Test For Experience Specific"/>
						<separator string="Frequency"/>
						 <filter name="once" string="Once" domain="[('frequency','=','o')]"  help="Filter Test For frequency Once"/>
						 <filter name="monthly" string="Monthly" domain="[('frequency','=','m')]"  help="Filter Test For frequency Monthly"/>
						 <filter name="quarterly" string="Quarterly" domain="[('frequency','=','q')]"  help="Filter Test For frequency Quarterly"/>
						 <filter name="half_yearly" string="Half Yearly" domain="[('frequency','=','h')]"  help="Filter Test For frequency Half Yearly"/>
						 <filter name="twice_year" string="Twice a Year" domain="[('frequency','=','t')]"  help="Filter Test For frequency Twice a Year"/>
						 <filter name="yearly" string="Yearly" domain="[('frequency','=','y')]"  help="Filter Test For frequency Yearly"/>
						 <filter name="not_specific" string="Not Specific" domain="[('frequency','=','n')]"  help="Filter Test For frequency not speciifc"/>
                    </group>
				</search>
			</field>
		</record>
		<!-- explicit form view of kw question set config : Ending -->
		<!-- <record model="ir.actions.act_window.view" id="kw_question_set_config_action_window_job">
	        <field name="sequence" eval="0"/>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="kw_question_set_config_form_view"/>
	        <field name="act_window_id" ref="kw_question_set_config_action_window"/>
	    </record> -->

	</data>
</odoo>