<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        <record id="kw_skill_index_report_view_search" model="ir.ui.view">
            <field name="name">kw_skill_index_report.default.search</field>
            <field name="model">kw_skill_answer_master</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="emp_rel" string="Employee Name" />
                    <field name="emp_desg" string="Employee Designation" />
                    <field name="test_name" string="Test Name" />
                    <field name="skill_id" string="Skill Name" />
                    <field name="skill_type_id" string="Skill Category" />
                    <group expand="0" string="Group By">
                        <filter string="Test Date" name="create_date" date="create_date"/>
                    </group>
                </search>
            </field>
        </record>

         <record id="kw_user_wise_test_view_tree" model="ir.ui.view">
            <field name="name">kw_user_total_test_report</field>
            <field name="model">kw_skill_answer_master</field>
            <field name="arch" type="xml">
                <tree  create='false' edit='false' delete="false">
                    <field name="emp_rel" string="Employee Name" />
                    <!-- <field name="emp_code" string="Employee Code" /> -->
                    <field name="emp_desg" string="Designation" />
                    <field name="test_name" string="Test Name" />
                    <field name="skill_type_id" string="Skill Category" />
                    <field name="skill_id" string="Skill" />
                    <field name="created_date" string="Test Date" />
                    <field name="status" string="Test Status" />
                    <field name="time_taken_duration" string="Time Taken" />
                    <field name="total_mark" string="Total Mark" />
                    <field name="total_mark_obtained" string="Mark Obtained" />
                    <field name="strip_percentage" string="Percentage Scored" />
                </tree>
            </field>
        </record>

        <record id="kw_skill_index_report_action_window" model="ir.actions.act_window">
            <field name="name">Skill Index Report</field>
            <field name="res_model">kw_skill_answer_master</field>
            <field name="domain">[('set_config_id.assessment_type','=','skill')]</field>
            <field name="view_mode">pivot,tree,form,search,graph</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="kw_user_wise_test_view_tree"/>
            <field name="search_view_id" ref="kw_skill_index_report_view_search"/>

        </record>

       <record id="kw_skill_index_report_view_pivot" model="ir.ui.view">
            <field name="name">kw_skill_index_report.view.pivot</field>
            <field name="model">kw_skill_answer_master</field>
            <field name="arch" type="xml">
                <pivot string="Skill Index Report">
                    <field name="emp_rel" type="row"/>
                    <field name="skill_id" type="col"/>
                </pivot>
            </field>
       </record>

   
