    <record model="ir.ui.view" id="view_sale_order_graph">
        <field name="name">kw_skill_answer_master.graph</field>
        <field name="model">kw_skill_answer_master</field>
        <field name="arch" type="xml">
            <graph string="Skill Index graph" type="bar" stacked="False">
                <field name="emp_rel" string="Employee Name" />
                <field name="skill_id" string="Skill"  />
                <!-- <field name="create_date" string="Test Date" interval="day"  /> -->
                <field name="percentage_scored" string="Percentage Scored" type="measure" />
            </graph>
        </field>
    </record>
   
    <record id="kw_skill_index_report_pivot" model="ir.ui.view">
        <field name="name">kw_skill_answer_master.pivot</field>
        <field name="model">kw_skill_answer_master</field>
        <field name="arch" type="xml">
            <pivot string="Skill Index Report" display_quantity="true">
                <field name="user_id" type="row"/>
                <field name="create_date" interval="day" type="col"/>
                <!-- <field name="total_mark_obtained" type="col"/> -->
            </pivot>
        </field>
    </record>
	</data>
