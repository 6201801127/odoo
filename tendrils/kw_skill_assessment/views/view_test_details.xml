<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        

        <record id="kw_view_test_details_tree_view" model="ir.ui.view">
           <field name="name">View test Details Tree</field>
           <field name="model">kw_skill_answer_master</field>
           <field name="arch" type="xml">
               <tree create='false' edit='false'>
                   <field name="user_id" string="Name"/>
                    <field name="test_name" string="Test Name"/>
                    <field name="skill_id" string="Skill"/>
                    <field name="skill_type_id" string="Skill Category"/>
                    <field name="percentage_scored" string="Percentage"/>
                    <field name="create_date" string="Test Date"/>
                    <field name="status" string="Test Status" />
               </tree>
           </field>
       </record>

        <record id="kw_view_test_details_form_view" model="ir.ui.view">
			<field name="name">View test Details Form</field>
			<field name="model">kw_skill_answer_master</field>
			<field name="arch" type="xml">
				<form create='false' edit='false' delete='false'>
					<sheet>
						<group>
							<group>
								<field name="user_id" string="Name" options="{'no_open': True}"/>
                                <field name="test_name" string="Test Name"/>
								<field name="skill_id" string="Skill" options="{'no_open': True}"/>
								<field name="skill_type_id" string="Skill Category" options="{'no_open': True}"/>
                                <field name="total_number_questions" string="Total Question"/>
                                <field name="total_attempted" string="Total Attempted"/>
                                <field name="total_correct_answer" string="Total correct answer"/>
                            </group>
                            <group>
                                <field name="total_mark" string="Total Mark"/>
                                <field name="total_mark_obtained" string="Total Mark Obtained"/>
                                <field name="strip_percentage" string="Percentage" />
                                <field name="time_taken_duration" string="Time Taken"/>
                                <!-- <field name="count_tab_change" string="Total Tab Changed"/> -->
                                <field name="create_date" string="Test Date"/>
                                <field name="status" string="Test Status" />
							</group>
							
						</group>
                        <group string='Answer Given'>
								<!-- <field name="no_simple_questions" string="Simple Questions"></field>
								<field name="no_average_questions" string="Average Questions"></field>
								<field name="no_complex_questions" string="Complex Questions"></field> -->
								<field name="child_ids" nolabel='1'>
									<tree editable="bottom">
										<field name="question" string="Question" widget="html"/>
										<field name="correct_option" string="Correct Option"/>
                                        <field name="selected_option" string="Selected Option"/>
                                        <field name="mark_obtained" string="Mark Obtained"/>
									</tree>
								</field>
							</group>
					</sheet>
				</form>
			</field>
		</record>

        <record id="kw_view_test_details_action_window" model="ir.actions.act_window">
            <field name="name">View Test Details</field>
            <field name="res_model">kw_skill_answer_master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="kw_view_test_details_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="delete">false</attribute>
                </xpath>
            </field>
        </record>
        
	</data>
</odoo>