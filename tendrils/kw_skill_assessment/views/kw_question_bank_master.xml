<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_question_bank_master_action_window" model="ir.actions.act_window">
            <field name="name">Question Bank Master</field>
            <field name="res_model">kw_skill_question_bank_master</field>
            <field name="domain">[('type','=','skill')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <!-- kw_ques_bank_master tree view -->
        <record id="kw_ques_bank_master_view_tree" model="ir.ui.view">
            <field name="name">kw_ques_bank_master.view.tree</field>
            <field name="model">kw_skill_question_bank_master</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <field name="name" />
                    <field name="skill"/>
                    <field name="skill_types"/>
                    <field name="type" groups="base.group_no_one"/>
                    <field name="total_no_of_questions" />
                </tree>
            </field>
        </record>

        <!-- kw_ques_bank_master form view -->
        <record id="kw_ques_bank_master_view_form" model="ir.ui.view">
            <field name="name">kw_ques_bank_master.view.form</field>
            <field name="model">kw_skill_question_bank_master</field>
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="name" required="1"/>
                                <field name="skill_types" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="skill" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="total_no_of_questions" />
                                <field name="simple_questions"/>
                                <field name="average_questions"/>
                                <field name="complex_questions"/>
                                <field name="type" attrs="{'invisible': [('type','=', 'skill')]}"/>
                            </group>
                        </group>

                        <group>
                            <!-- <field name="questions" string="Questions"/> -->
                            <field name="questions" string="Questions">
									<tree>
										<field name="question" string="Question"/>
									</tree>
                            </field>
									
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_ques_bank_master_view_search" model="ir.ui.view">
            <field name="name">kw_ques_bank_master.view.search</field>
            <field name="model">kw_skill_question_bank_master</field>
            <field name="arch" type="xml">
                <search>
                    <field name="skill" />
                    <field name="skill_types" />
                </search>
            </field>
        </record>
    </data>
</odoo>