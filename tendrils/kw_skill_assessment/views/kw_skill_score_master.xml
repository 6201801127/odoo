<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- kw_master_skill tree view -->
        <record id="kwmaster_skill_score_view_tree" model="ir.ui.view">
            <field name="name">kw_master_skill_score.view.tree</field>
            <field name="model">kw_skill_score_master</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <!-- Add your fields here -->
                    <field name="name" string="Name"/>
                    <field name="code" string="Code"/>
                    <field name="min_value" string="Minimum Value" />
                    <field name="max_value" string="Maximum Value"/>
                    <field name="color" string="Color"/>
                    <field name="icon" string="Icon"/>
                    <field name="tagline" string="Tagline"/>
					<field name="active" widget="boolean_toggle" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <!-- kw_master_skill form view -->
        <record id="kw_master_skill_score_view_form" model="ir.ui.view">
            <field name="name">kw_master_skill_score.view.form</field>
            <field name="model">kw_skill_score_master</field>
            <field name="arch" type="xml">
                <form string="" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                 <field name="name" string="Name" />
                                <field name="code" string="Code"/>
                                <field name="min_value" string="Minimum Value" />
                                <field name="max_value" string="Maximum Value" /> 
                            </group>
                        
                            <group>
                                <field name="tagline" string="Tagline"/>
                                <field name="icon" string="Icon"/>
                                <field name="color" string="Color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_skill_score_master_action_window" model="ir.actions.act_window">
            <field name="name">Skill Score Master</field>
            <field name="res_model">kw_skill_score_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Add a Skill score  ...
				</p>
			</field>
        </record>

    </data>
</odoo>