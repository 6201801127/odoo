<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name form view -->
        <record id="kw_question_set_config_form_view_view" model="ir.ui.view">
            <field name="name">Question set configuration</field>
            <field name="model">kw_skill_question_set_config</field>
            <field name="arch" type="xml">
                <form create='false' edit='false'>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                        });
                    </script>
                    <sheet>
                        <h1 class="text-center text-uppercase">Instruction</h1><br/>
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-4 mx-auto">
                                <p class="h6 font-weight-light"><field name="instruction" attrs="{'readonly': 1 }"/></p>

                                <!-- <p class="h6 font-weight-light"><field name="skill"/></p> -->
                                
                                <!-- <p class="h6 font-weight-light"> Don't forget to first check out the test tips and techniques mentioned further down this page.</p><br/> -->
                                <p class="text-danger h4 text-center mb-4">NOTE:  Don't refresh the test page until you have submitted! </p>
                                <h2 class="text-center text-uppercase text-primary mb-3">All the best</h2>
                                <p class="text-primary text-center h4 font-weight-bold mb-5"> I understand the above instructions. Click below button to Start the Assessment. </p>
                                <button type="object" name="start_test" class="btn btn-primary btn-lg btn-block p-3">Start Test</button>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
