<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
       <record id="kw_skill_assessment_email_template" model="mail.template">
        <field name="name">Reminder Mail for Self Skill Assessment</field>
        <field name="email_from">tendrils@csm.tech</field>
        <!-- <field name="email_from">${object.company_id and object.company_id.email or ''}</field> -->
        <field name="subject">${ctx['subject']}</field>
        <field name="email_to">${ctx['email_to']}</field>
        <field name="model_id" ref="kw_skill_assessment.model_kw_skill_sheet"/>
        <field name="auto_delete" eval="False"/>
          <field name="body_html" >
              <![CDATA[
                  <table border="0" >
                      <tr>
                          <td>
                              <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                    <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                    ${ctx['name']},
                                </h5>
                                % if ctx['mail_for'] == "Self":
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Good day! In line with the skill capability of the organization, you are requested to spare a few minutes to put your self-assessment scores 1 to 5 against your Primary, Secondary and tertiary skills.</b>.
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                        By clicking the below link.</p>
                                        <br/>
                                        <a href="/web#action=${ctx['action_id']}&amp;model=kw_skill_sheet&amp;view_type=Form" target="new"
                                            style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #30a20f;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: none;">
                                               Click Here
                                        </a>
                                        <br/><br/>
                                % elif ctx['mail_for'] == 'ra':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Good day! In line with the skill capability of the organization, you are requested to spare a few minutes to validate the skill assessment scores your team member ,1 to 5 against Primary, Secondary and tertiary skills.</b>.
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                        By clicking the below link.</p>
                                        <br/>
                                        <a href="/web#action=${ctx['action_id']}&amp;model=kw_skill_sheet&amp;view_type=list" target="new"
                                            style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #30a20f;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: none;">
                                               Click Here
                                        </a>
                                        <br/><br/>
                                % elif ctx['mail_for'] == 'lnk':
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Good day! In line with the skill capability of the organization, you are requested to spare a few minutes to validate the skill assessment scores of employee ,1 to 5 against Primary, Secondary and tertiary skills.</b>.
                                    </p>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                        By clicking the below link.</p>
                                        <br/>
                                        <a href="/web#action=${ctx['action_id']}&amp;model=kw_skill_sheet&amp;view_type=list" target="new"
                                            style="padding: .5rem 3rem;border-radius: .2em;border: none;color: #fff;background-color: #30a20f;font-size: 16px;margin-top: 1.5rem;display:inline-block;white-space: nowrap;text-decoration: none;">
                                               Click Here
                                        </a>
                                        <br/><br/>
                                % endif
                              </div>
                              <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                  <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                      Note:
                                  </p>
                                  <p style="font-weight:bold">
                                        Kindly ensure completion of the Skill Assessment within the specified timeframe, spanning from ${ctx['from_date']} to ${ctx['to_date']}
                                  </p>
                                  <!-- <p>
                                      <span style='text-align:right;color:blue;font-weight:bold; font-size:18px; margin-bottom:0'><i> 1- represents Poor , 2- represents Below Average, 3- represents Average, 4- represents Good, 5- represents Excellent</i></span>
                                  </p> -->
                                  <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                     This is a system generated mail. Kindly do not reply to this mail.
                                  </p>
                              </div>
                          </td>
                      </tr>
                  </table>
              ]]>    
          </field>
     </record>
    </data>
</odoo>