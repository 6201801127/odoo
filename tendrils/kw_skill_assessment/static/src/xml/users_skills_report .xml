<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="kw_skill_assessment.users_skill_report">
       <div class="container-fluid p-5">
            <div class="card">
                <div class="card-body">
                    <div class="box-body table-responsive">
                        <table class="table table-bordered" id="skill_report">
                            <thead class="report_theads">
                                <tr class="rpt_heading">
                                    <!-- <th class="text-center" width="60"> Sl. No. </th> -->
                                    <th class="text-left"> Resource Name </th>
                                    <th class="text-left"> Designation </th>
                                    <th class="text-left"> Core Skill </th>
                                    <th class="text-left"> Skill 1 </th>
                                    <th class="text-left"> % </th>
                                    <th class="text-left"> Rating </th>
                                    <th class="text-left"> Skill 2 </th>
                                    <th class="text-left"> % </th>
                                    <th class="text-left"> Rating </th>
                                    <th class="text-left"> Skill 3 </th>
                                    <th class="text-left"> % </th>
                                    <th class="text-left"> Rating </th>
                                    <th class="text-left"> Skill 4 </th>
                                    <th class="text-left"> % </th>
                                    <th class="text-left"> Rating </th>
                                </tr>
                            </thead>
                            <tbody class="report_tbodys">
                                <t t-set="index" t-value="1"/>
                                <tr t-foreach="widget.sk_master" t-as="sm">
                                    <td class="text-left"><t t-esc="sm.name" /></td>
                                    <td class="text-left"><t t-esc="sm.designation" /></td>
                                    <td class="text-left"><t t-esc="sm.core_skill" /></td>
                                    <td class="text-left"><t t-esc="sm.skill1" /></td>
                                    <td class="text-left"><t t-esc="sm.percentage1" /></td>
                                    <td class="text-left"><t t-esc="sm.rating1" /></td>
                                    <td class="text-left"><t t-esc="sm.skill2" /></td>
                                    <td class="text-left"><t t-esc="sm.percentage2" /></td>
                                    <td class="text-left"><t t-esc="sm.rating2" /></td>
                                    <td class="text-left"><t t-esc="sm.skill3" /></td>
                                    <td class="text-left"><t t-esc="sm.percentage3" /></td>
                                    <td class="text-left"><t t-esc="sm.rating3" /></td>
                                    <td class="text-left"><t t-esc="sm.skill4" /></td>
                                    <td class="text-left"><t t-esc="sm.percentage4" /></td>
                                    <td class="text-left"><t t-esc="sm.rating4" /></td>
                                    <t t-set="index" t-value="index+1" />
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>