<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="kw_skill_assessment.core_skill_report">
       <div class="container-fluid p-5">
            <div class="card">
                <div class="card-body">
                    <div class="box-body table-responsive">
                        <table class="table table-bordered" id="skill_report">
                            <thead class="report_theads">
                                <tr class="rpt_heading">
                                    <!-- <th class="text-left" width="60"> Sl. No. </th> -->
                                    <th class="text-left"> Skill </th>
                                    <th class="text-center"> Core Resource Strengths </th>
                                    <th class="text-center"> Resource With Knowledge </th>
                                    <th class="text-center"> % </th>
                                    <th class="text-center"> Poor </th>
                                    <th class="text-center"> Average </th>
                                    <th class="text-center"> Good </th>
                                    <th class="text-center"> % of Good </th>
                                </tr>
                            </thead>
                            <tbody class="report_tbodys">
                                <t t-set="index" t-value="1"/>
                                <tr t-foreach="widget.sk_master" t-as="sm">
                                    <!-- <td width="60" class="text-left font-weight-bold" t-esc="index"> </td> -->
                                    <td class="text-left"><t t-esc="sm.name" /></td>
                                    <td class="text-center">
                                        <t t-if='sm.total_emp_count > 0'>
                                            <a href="#" data-toggle="modal" data-target="#coreEmpModal" >
                                                <u title='View Employee Data'><span class='click' t-esc="sm.total_emp_count" /></u>
                                            </a>
                                            <div style="display:none;" class="ed" >
                                            <t t-if="sm.core_resource_strength_users" t-call="kw_skill_assessment.core_employee_details">
                                                <t t-set="employees" t-value="sm.core_resource_strength_users" />
                                            </t>
                                            </div>
                                            <t t-call="kw_skill_assessment.core_skill_report_modal">
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="sm.total_emp_count" />
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <t t-if='sm.emp_count > 0'>
                                            <a href="#" data-toggle="modal" data-target="#coreEmpModal" >
                                                <u class='click' t-esc="sm.emp_count" />
                                            </a>
                                            <div style="display:none;" class="ed" >
                                                <t t-if="sm.resource_with_knowledge_users" t-call="kw_skill_assessment.core_employee_details">
                                                    <t t-set="employees" t-value="sm.resource_with_knowledge_users" />
                                                </t>
                                            </div>
                                            <t t-call="kw_skill_assessment.core_skill_report_modal">
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="sm.emp_count" />
                                        </t>
                                    </td>
                                    <td class="text-center"><t t-esc="sm.emp_percent" /></td>
                                    <td class="text-center">
                                        <t t-if='sm.fail > 0'>
                                            <a href="#" data-toggle="modal" data-target="#coreEmpModal" >
                                                <u title='View Employee Data'><span class='click' t-esc="sm.fail" /></u>
                                            </a>
                                            <div style="display:none;" class="ed" >
                                            <t t-if="sm.fail_users" t-call="kw_skill_assessment.core_employee_details">
                                                <t t-set="employees" t-value="sm.fail_users" />
                                            </t>
                                            </div>
                                            <t t-call="kw_skill_assessment.core_skill_report_modal">
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="sm.fail" />
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <t t-if='sm.average > 0'>
                                            <a href="#" data-toggle="modal" data-target="#coreEmpModal" >
                                                <u title='View Employee Data'><span class='click' t-esc="sm.average" /></u>
                                            </a>
                                            <div style="display:none;" class="ed" >
                                                <t t-if="sm.average_users" t-call="kw_skill_assessment.core_employee_details">
                                                    <t t-set="employees" t-value="sm.average_users" />
                                                </t>
                                            </div>
                                            <t t-call="kw_skill_assessment.core_skill_report_modal">
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span class='click' t-esc="sm.average" />
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <t t-if='sm.good > 0'>
                                            <a href="#" data-toggle="modal" data-target="#coreEmpModal" >
                                                <u title='View Employee Data'><span class='click' t-esc="sm.good" /></u>
                                            </a>
                                            <div style="display:none;" class="ed" >
                                            <t t-if="sm.good_users" t-call="kw_skill_assessment.core_employee_details">
                                                <t t-set="employees" t-value="sm.good_users" />
                                            </t>
                                            </div>
                                            <t t-call="kw_skill_assessment.core_skill_report_modal">
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="sm.good" />
                                        </t>
                                    </td>
                                    <td class="text-center"><t t-esc="sm.percentage" /></td>
                                    <t t-set="index" t-value="index+1" />
                                </tr>
                            </tbody>
                            <tfoot class='sum'>
                                <tr class="">
                                    <!-- <th class="text-center" width="60"> Sl. No. </th> -->
                                    <th class="text-left">Total</th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                     <script>
                        $(document).on('show.bs.modal','#coreEmpModal', function (event) {
                            console.log('modal called')
                            
                            var modal = $(this);
                            var table = $(event.relatedTarget).next();
                            $('#core-table-body').html("");
                            $('#core-table-body').append(`${table.html()}`);
                        });
                    </script>
                </div>
            </div>
        </div>
    </t>
    <t t-name="kw_skill_assessment.core_skill_report_modal">
        <div class="modal fade" id="coreEmpModal" tabindex="-1" role="dialog" aria-labelledby="goodModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="coreModalLongTitle">Employee Details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body" id='core-table-body'>  
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="buttons-excel float-right">Excel</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="kw_skill_assessment.core_employee_details">
        <table class="table table-bordered" >
            <thead class="report_theads thead-light">
                <tr class="rpt_heading">
                    <!-- <th class="text-left" width="60"> Sl. No. </th> -->
                    <th class="text-left"> Name </th>
                    <th class="text-left"> Emp Code </th>
                    <th class="text-left"> Designation </th>
                    <th class="text-left"> Department </th>
                    <th class="text-left"> Skill </th>
                    <th class="text-left"> Score </th>
                    
                    <!-- <th class="text-left" t-att-style="'display:none' if sm.core_resource_strength_users else ''"> Score </th> -->
                </tr>
            </thead>
            <tbody class="report_tbodys">
                <tr t-foreach="employees" t-as="emp">
                    <t t-if="emp">
                        <td class="text-left"><t t-esc="emp['Name']"/></td>
                        <td class="text-left"><t t-esc="emp['Emp Code']"/></td>
                        <td class="text-left"><t t-esc="emp['Designation']"/></td>
                        <td class="text-left"><t t-esc="emp['Department']"/></td>
                        <td class="text-left"><t t-esc="sm.name" /></td>
                        <t t-if="emp['Score']>=0.00">
                            <td class="text-left" ><t t-esc="emp['Score']" /></td>
                        </t>
                        <t t-else=''>
                            <td class="text-left" >N/A</td>
                        </t>
                        
                    </t>
                </tr>    
            </tbody>
        </table>
    </t>
</templates>