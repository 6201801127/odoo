<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="kw_skill_assessment.skill_stack_report">
        <div class="container-fluid p-5">
            <div class="table-responsive">
                <table class="table table-bordered fixed_headers">
                    <thead class="report_thead">
                        <tr class="rpt_heading">
                            <th class="text-left wordbreak" width="60" scope="col">SL No.</th>
                            <th class="text-left wordbreak" scope="col">Skill Stack</th>
                            <th class="text-left wordbreak" scope="col">No. of Employee</th>
                            <th class="text-left wordbreak" scope="col">Poor</th>
                            <th class="text-left wordbreak" scope="col">Average</th>
                            <th class="text-left wordbreak" scope="col">Good</th>
                            <th class="text-left wordbreak" scope="col">Percentage</th>
                        </tr>
                    </thead>
                    <tbody class="report_tbody">
                        <t t-set="index" t-value="1"/>
                        <tr t-foreach="widget.skill_group" t-as="sg">
                            <td width="60" class="text-left font-weight-bold" t-esc="index"> </td>
                            <td class="text-left font-weight-bold" data-toggle="tooltip" data-placement="right" t-att-title="sg.skills"> <t t-esc="sg.name" /></td>
                            <td class="text-left font-weight-bold"> <t t-esc="sg.emp_count" /> </td>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                            <td class="text-left font-weight-bold"> <t t-esc="sg.percentage" /> % </td>
                            <t t-set="index" t-value="index+1" />
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>