<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kwonboard_checklist_wizard" model="ir.ui.view">
            <field name="name">Post Onboarding Checklist Wizard</field>
            <field name="model">kw_onboarding_checklist_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <field name="field_name"/>
                        <field name="status"/>
                        <center>
                            <button name="get_checklist_report" type="object" class="btn btn-primary btn-lg">Check</button>
                        </center>
                    </div>
                </form>
            </field>
        </record>
        <act_window id="kwonboard_checklist_wizard_actions"  name="Checklist Report"
		          res_model="kw_onboarding_checklist_wizard" 
		            view_type="form" view_mode="form" key2="client_action_multi" target="new"/>
    </data>
</odoo>

