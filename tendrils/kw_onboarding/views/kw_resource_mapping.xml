<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="resource_mapping_tree" model="ir.ui.view">
			<field name="name">resource_mapping.tree</field>
			<field name="model">hr.employee</field>
			<field name="priority" eval="10" />
			<field name="arch" type="xml">
				<tree string="Resource Mapping" create='false' edit='false' delete='false'>
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="job_branch_id"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type"/>
                    <field name="mrf_reference_no"/>
				</tree>
			</field>
		</record>

        <record id="resource_mapping_search" model="ir.ui.view">
			<field name="name">resource_mapping.view.search</field>
			<field name="model">hr.employee</field>
			<field name="arch" type="xml">
				<search string="Search Description">
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="job_branch_id"/>
                    <field name="date_of_joining"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type"/>
				</search>
			</field>
		</record>

        <record id="resource_mapping_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Employee Resource Mapping</field>
			<field name="res_model">hr.employee</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name='search_view_id' ref='resource_mapping_search'/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('resource_mapping_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record to show...
                </p>
            </field>
		</record>

         <record id="emp_mrf_tree" model="ir.ui.view">
            <field name="name">emp_mrf.tree</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="10" />
            <field name="arch" type="xml">
                <tree string="MRF Mapping" editable="bottom" create="false" delete="false">
                    <field name='name' readonly="1"/>
                    <!-- <field name="mrf_id"/> -->
                    <field name="budget_type"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                </tree>
            </field>
        </record>

       <!--  <record id="mrf_mapping_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee MRF Mapping</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('emp_mrf_tree')})]"/>
        </record> -->

         <menuitem id="resource_mapping_menu" name="Employee Resource Mapping" parent="kw_onboarding.postonboarding_parent_menu"
                  sequence="90" action="resource_mapping_action" groups="kw_onboarding.group_kw_onboarding_manager"/>
