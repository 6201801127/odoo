<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_onboarding_page" model="website.page">
            <field name="name">Onboarding page</field>
            <field name="website_published">True</field>
            <field name="url">/onboarding</field>
            <field name="type">qweb</field>
            <field name="key">kw_onboarding.onboarding_page</field>
            <field name="arch" type="xml">
                <t t-name="kw_onboarding.kwonboard_onboarding_template">
                    <t t-call="website.layout">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-sm-offset-6 col-md-7">
                                    <div class="card py-4 pl-5 pr-5">
                                        <div class="card-body">
                                            <form name="frm_onboarding" id="frm_onboarding" class="form-horizontal" method="post" action="javascript:void(0)" autocomplete="off">
                                                <div class="md-form">
                                                    <input type="text" class="form-control txtvalid"  id="txtMobNum" name="txtMobNum" maxlength='10' />
                                                    <label for="txtMobNum" class="font-weight-light reg"> Registered Mobile Number </label>
                                                    <span id="errspan" class="text-warning"/>
                                                </div>

                                                <div class="d-flex justify-content-center">
                                                    <div class="col-sm-12 text-center">
                                                        <button type="submit" class="btn btn-warning font-weight-bold" id="btnSubmitMobile"> Submit </button>
                                                        <button type="reset" class="btn btn-danger closepage font-weight-bold"> Reset </button>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="OTPnumber" tabindex="-1" role="dialog" aria-labelledby="OnboardingOTP" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered modal-primary" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header text-center">
                                                                <h4 class="modal-title w-100 font-weight-bold"> OTP Verification </h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span>&amp;times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body mx-3" id="popup">
                                                                <div class="text-center">
                                                                    <span class="text-danger" id="desc"/>
                                                                </div>
                                                                <div class="md-form mx-5">
                                                                    <input type="text" class="form-control txtvalid otptext" id="txtOtpNum" name="txtOtpNum" maxlength='4' />
                                                                    <label for="txtOtpNum" class="font-weight-bold grey-text reg"> Enter OTP </label>
                                                                    <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                                    <div class="text-left mx-1" id="resultdata"/>
                                                                </div>
                                                                <div class="text-left mx-5">
                                                                    <label for="Time Left" class="col-form-label"> Time Left: </label> &amp;emsp;
                                                                    <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer d-flex justify-content-between">
                                                                <button type="button" class="btn btn-success font-weight-bold" id="resendotp"> Resend OTP</button>
                                                                <button type="button" class="btn btn-primary font-weight-bold" id="btnSubmit">Submit</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="oe_structure"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="onboarding_page_link" model="website.menu">
            <field name="name">Onboarding</field>
            <field name="page_id" ref="onboarding_page"/>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">99</field>
        </record>

        <template id="kwonboard_onboarding_template">
            <t t-call="website.layout">
                <div class="login_section">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 login_logo">
                            <a href="/" class="navbar-brand logo">
                                <img class="tebdrils_image" src="/kwantify_theme/static/src/img/tendrils_logo.png" role="img" alt="Tendrils Logo"
                                title="CSM Technologies Pvt. Ltd."/>
                            </a>
                          <p class="login_content desk_content">Unauthorized exchange of Tendrils and Office email credentials leading to malpractices and misuse will be treated as act of indiscipline and action will be taken on parties involved in the exchange.</p>
                        </div> 
                        <div class="col-xl-6 col-lg-6">
                            <div class="card login_form bg-white">
                                <div class="">
                                    <form name="frm_onboarding" id="frm_onboarding" class="form-horizontal" method="post" action="javascript:void(0)" autocomplete="off">
                                        <div style="width: 100%;">
                                            <h1 class="onboarding_heading text-center">Onboarding</h1>
                                        </div>
                                        <div class="md-form input-group mb-5 applicant_en flex-column">
                                            <div class="boxed-input input-group-append">
                                                <input type="text" class="form-control txtvalid " placeholder='Registered Mobile Number' t-att-value="request.params.get('txtMobNum')" id="txtMobNum" name="txtMobNum" maxlength='10' />
                                            </div>
                                           
                                            <!-- <label for="txtMobNum" class="font-weight-light reg"> Registered Mobile Number </label> -->
                                            <span id="errspan" class="text-danger "/>
                                        </div>

                                        <div class="row d-flex justify-content-between">
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn loginButton text-center font-weight-bold w-100 text-capitalize" id="btnSubmitMobile"> Submit </button>
                                                <!-- <button type="reset" class="btn btn-danger closepage font-weight-bold pull-right"> Reset </button> -->
                                            </div>
                                        </div>
                                        <div class="modal fade col-sm-4 col-md-4 col-lg-4 col-xl-4 mx-auto" id="OTPnumber" tabindex="-1" role="dialog" aria-labelledby="OnboardingOTP" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-primary" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header text-center">
                                                        <h4 class="modal-title w-100 font-weight-bold"> OTP Verification </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span>&amp;times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body" id="popup">
                                                        <div class="text-center">
                                                            <span class="text-danger" id="desc"/>
                                                        </div>
                                                        <div class="text-center">
                                                            <span class="text-danger" id="otp_alert"/>
                                                        </div>
                                                        <input id="hidden_field_val" type="hidden" t-att-value="key" t-att-style="{'display': 'none'}"/>
                                                        <div class="md-form mx-3" id='enter_otp_for_verification'>
                                                            <input type="text" class="form-control txtvalid otptext" id="txtOtpNum" name="txtOtpNum" maxlength='4' />
                                                            <label for="txtOtpNum" class="font-weight-light grey-text reg"> Enter OTP </label>
                                                            <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                            <div class="text-left mx-1" id="resultdata"/>
                                                        </div>
                                                        <div class="text-left mx-3">
                                                            <label for="Time Left" class="col-form-label" id="time_lable"> Time Left: </label> &amp;emsp;
                                                            <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                            <span style="float:right;color:#5a95f5;" class="font-weight-bold mt-2" id="max_attempt"/>
                                                            <label style="float:right" for="Max Attempt" class="col-form-label" id='max_attempt_lable'> Max Attempt : </label> &amp;emsp;
                                                        </div>
                                                        <div class="text-center text-danger mx-3" id='try_after_block'>
                                                            <label for="Time Left" class="col-form-label"> Please Try After : </label> &amp;emsp;
                                                            (<span class="text-danger font-weight-bold mt-2" id="freezed_screen_time"/>) 
                                                            <span class="text-danger font-weight-bold mt-2" id="real_time"/>
                                                        </div>
                                                        <div class="text-center text-danger mx-3">
                                                            <span class="text-danger font-weight-bold mt-2" id="display_login_again"/>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer d-flex justify-content-between" id='otp_button_action'>
                                                        <button type="button" class="btn btn-primary font-weight-bold" id="btnSubmit">Submit</button>
                                                        <button type="button" class="btn btn-success font-weight-bold mx-3" id="resendotp"> Resend OTP</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="oe_structure"/>
                        </div>
                    </div>
                    <p class="login_content mob_content">Unauthorized exchange of Tendrils and Office email credentials leading to malpractices and misuse will be treated as act of indiscipline and action will be taken on parties involved in the exchange.</p>
                </div> </div>
            </t>
        </template>

        <record id="onboarding_page" model="website.page">
            <field name="name">Onboarding page</field>
            <field name="website_published">True</field>
            <field name="url">/onboarding</field>
            <field name="view_id" ref="kwonboard_onboarding_template"/>
        </record>
    </data>
</odoo>
