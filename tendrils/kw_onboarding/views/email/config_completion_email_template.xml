<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="config_completion_mail_template" model="mail.template">
            <field name="name">Config completion e-mail template</field>
            <field name="email_from">${ctx['user_mail']}</field>
            <!-- <field name="subject">${object.name} | ${ctx['dept_name']} Environment Mapping Completed</field> -->
            <field name="subject">New Entrant : Requirement Updation (${ctx['dept_name']}) | Onboarding</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="email_cc">${ctx['emails_cc']}</field>
            <field name="model_id" ref="kw_onboarding.model_kwonboard_enrollment"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small> <strong>${ctx['user_name']}</strong>,</h5>
                            % if ctx['dept_name'] == 'IT'
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">Email id and Domain Name have been updated for new joinee  <strong>${object.name}</strong>.</p><br/>
                                <p style="color: #676767;line-height: 22px;margin: 20px 0 10px 0;font-size: 18px;text-decoration: underline;">Domain Name And Email ID Details</p>
                                <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                    <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                                          <tr>
                                              <td width=250><strong>Domain User Name</strong></td>
                                                % if object.domain_login_id:
                                                  <td>
                                                    ${object.domain_login_id}
                                                  </td>
                                                % else:
                                                  <td>NA</td>
                                                % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Domain Password</strong></td>
                                              % if object.domain_login_pwd:
                                                <td>
                                                  ${object.domain_login_pwd}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Email ID</strong></td>
                                              % if object.csm_email_id:
                                                <td>
                                                  ${object.csm_email_id}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Email Password</strong></td>
                                              % if object.outlook_pwd:
                                              <td>
                                                    ${object.outlook_pwd}
                                              </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Biometric ID</strong></td>
                                              % if object.biometric_id:
                                              <td>
                                                    ${object.biometric_id}
                                              </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>EPBX</strong></td>
                                              % if object.epbx_no:
                                              <td>
                                                    ${object.epbx_no}
                                              </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                    </tbody>
                                </table>
                            %endif

                            % if ctx['dept_name'] == 'Finance'
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">Budget details have been updated for new joinee <strong>${object.name}.</strong></p><br/>
                                <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                    <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                          <tr>
                                              <td width=250><strong>Employee Role</strong></td>
                                              % if object.emp_role:
                                                <td>
                                                  ${object.emp_role.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Employee Category</strong></td>
                                              % if object.emp_category:
                                                <td>
                                                  ${object.emp_category.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Employment Type</strong></td>
                                              % if object.employement_type:
                                              <td>
                                                ${object.employement_type.name}
                                              </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Direct/Indirect</strong></td>
                                              % if object.direct_indirect:
                                                % if object.direct_indirect == '1':
                                                  <td>
                                                    Direct
                                                  </td>
                                                %endif
                                                % if object.direct_indirect == '2':
                                                  <td>
                                                    In-Direct
                                                  </td>
                                                %endif
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Project</strong></td>
                                              % if object.project_id:
                                                <td>
                                                  ${object.project_id.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Contract Start Date</strong></td>
                                              % if object.start_dt:
                                                <td>
                                                    ${object.start_dt.strftime('%d-%b-%Y')}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Contract End Date</strong></td>
                                              % if object.end_dt:
                                                <td>
                                                      ${object.end_dt.strftime('%d-%b-%Y')}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                    </tbody>
                                </table>
                            %endif

                            % if ctx['dept_name'] == 'Admin'
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">ID card details have been updated for new joinee <strong>${object.name}</strong>.</p><br/>
                                <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                    <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                        % if object.id_card_no:
                                          <tr>
                                              <td width=250><strong>ID card</strong></td>
                                              <td>
                                                    ${object.id_card_no.name}
                                              </td>
                                          </tr>
                                        % endif

                                    </tbody>
                                </table>
                            %endif
                            % if ctx['dept_name'] == 'RCM'
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">SBU,RA and Division have been updated for new joinee <strong>${object.name}.</strong></p><br/>
                                <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                    <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                          <tr>
                                              <td width=250><strong>Employee SBU</strong></td>
                                              % if object.sbu_master_id:
                                                <td>
                                                  ${object.sbu_master_id.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                              <td width=250><strong>Type</strong></td>
                                              % if object.sbu_type:
                                                <td>
                                                  ${object.sbu_type}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>
                                          <tr>
                                            <td><strong>Reporting Authority</strong></td>
                                              % if object.tmp_admin_auth:
                                                <td>
                                                    ${object.tmp_admin_auth.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>
                                          <tr>
                                              <td><strong>Division</strong></td>
                                                % if object.division:
                                                  <td>
                                                      ${object.division.name}
                                                  </td>
                                                % else:
                                                  <td>NA</td>
                                                % endif
                                          </tr>
                                          <tr>
                                            <td><strong>Practice</strong></td>
                                              % if object.section:
                                                <td>
                                                    ${object.division.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>
                                          <tr>
                                            <td><strong>Section</strong></td>
                                            % if object.practise:
                                              <td>
                                                ${object.practise.name}
                                              </td>
                                            % else:
                                              <td>NA</td>
                                            % endif
                                          </tr>
                                    </tbody>
                                </table>

                            % endif
                            <p style="color: #676767;line-height: 22px;margin: 20px 0 10px 0;font-size: 18px;text-decoration: underline;">User Profile Details</p>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                    <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                        % if object.name:
                                          <tr>
                                              <td width=250><strong>Name</strong></td>
                                              <td>
                                                    ${object.name}
                                              </td>
                                          </tr>
                                        % endif

                                        % if object.mobile:
                                          <tr>
                                              <td><strong>Mobile</strong></td>
                                              <td>
                                                    ${object.mobile}
                                              </td>
                                          </tr>
                                        % endif

                                        % if object.location_id:
                                          <tr>
                                              <td><strong>Location</strong></td>
                                              <td>
                                                    ${object.location_id.alias}
                                              </td>
                                          </tr>
                                        % endif

                                        % if object.dept_name:
                                          <tr>
                                              <td><strong>Department</strong></td>
                                              <td>
                                                    ${object.dept_name.name}
                                              </td>
                                          </tr>
                                        % endif

                                          <tr>
                                              <td><strong>Division</strong></td>
                                              % if object.division:
                                                <td>
                                                  ${object.division.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Practice</strong></td>
                                              % if object.section:
                                                <td>
                                                  ${object.section.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Section</strong></td>
                                              % if object.practise:
                                                <td>
                                                  ${object.practise.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                              <td><strong>Designation</strong></td>
                                              % if object.job_id:
                                                <td>
                                                  ${object.job_id.name}
                                                </td>
                                              % else:
                                                <td>NA</td>
                                              % endif
                                          </tr>

                                          <tr>
                                            <td><strong>Joining Date</strong></td>
                                            % if object.tmp_join_date:
                                              <td>
                                                ${object.tmp_join_date.strftime('%d-%b-%Y')}
                                              </td>
                                            % else:
                                              <td>NA</td>
                                            % endif
                                          </tr>

                                    </tbody>
                                </table>
                            <br/><br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                            Thanks & regards <br/>
                            CSM Technologies Pvt. Ltd. <br/>
                            <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p></p>     
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>
    </data>
</odoo>