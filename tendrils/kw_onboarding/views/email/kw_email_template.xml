<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="employee_email_template" model="mail.template">
            <field name="name">Onboard e-mail template</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Welcome to the CSM Pre-Onboarding!</field>
            <field name="email_to">${object.email|safe}</field>
            <field name="email_cc">${ctx['email_cc']|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="kw_onboarding.model_kwonboard_enrollment"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" >
            <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                    <!-- CONTENT -->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 0px; border-collapse:separate;">
                                <tbody>
                                <tr>
                                <td valign="top" style="font-size: 13px;">
                                    <div>
                                        <!-- <h5 style="color:#676767;font-size: 18px;margin: 0 0 0 0 ;font-weight: 400;">
                                            Welcome to ${object.company_id.name}
                                        </h5> -->
                                        <br/>
                                        Dear <strong>${object.name},</strong>
                                        <br/>
                                        <p>Congratulations on successfully navigating all the interview rounds with CSM Tech!</p>
                                        <!-- <p>Thank you for accepting the offer and choosing to join CSM Family.</p> -->
                                        <p>I'm reaching out to you as your Documentation Advisor to extend a warm welcome to the CSM Documentation Program. 
                                         My role is to support you in transitioning smoothly into the subsequent HR processes.</p>

                                        <p><strong>Please take a moment to carefully review this email as it contains vital information regarding the validation of your documents.</strong></p>

                                        <p>To proceed, kindly complete the necessary sections by filling in your personal details and uploading the required documents through the provided link before 
                                            % if object.profile_submit_date:
                                                <strong>by ${object.profile_submit_date.strftime('%d-%b-%Y')}</strong>
                                            % else:
                                                <strong>NA</strong>
                                          % endif
                                        .</p>
                                        <div style="margin: 16px 0px 16px 0px;">
                                            <a href=" ${website_url}/onboarding/?txtMobNum=${object.mobile}" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:16px;" target="new">
                                                Click Here
                                            </a>
                                        </div>

                                        <p>It is vital for you to review your information carefully and highlight any discrepancies to me.</p>
                                        <div style="">
                                            1. <strong>Personal Details</strong> :
                                            <ul>
                                                <li>Profile details should be filled up based on the records of 10th Standard Certificate or Aadhaar Card.</li>
                                                <li>Profile Photograph - Resolution of the photo should be 72 DPI with white/off white background and formal attire only.</li>
                                            </ul>
                                        </div>

                                        <div style="">
                                            2. <strong>Education & Training Details</strong> :
                                            <p>Under Education and training you need to upload.</p>
                                            <ul>
                                                <li>10th Standard Mark sheet and Certificate</li>
                                                <li>12th Standard Mark sheet and Certificate</li>
                                                <li>Diploma Mark sheet and certificate (if applicable)</li>
                                                <li>Degree Mark sheet (all semesters) and Certificate / Provisional Certificate</li>
                                                <li>PG Mark sheet and Certificate (if applicable) / Provisional Certificate</li>
                                                <li>Certificates of Certification courses (if applicable)</li>
                                            </ul>
                                        </div>
                                        <div style="">
                                            3. <strong>Identification Proofs</strong> :
                                            <p>Under Identification Section you need to upload the ID Proof documents:</p>
                                            <ul>
                                                <li>Aadhaar Card</li>
                                                <li>PAN Card</li>
                                                <li>Driving License</li>
                                                <li>Passport (Valid Copy). If you have applied for a Passport, please provide the file number along with the date of application</li>
                                            </ul>
                                        </div>
                                        <div style="">
                                            4. <strong>Work Experience</strong> :
                                            <p>Under Work Experience Section you need to upload the previous organization documents.</p>
                                            <ul>
                                                <li>Service/Experience Certificates and Relieving letters of all Previous Organizations (if applicable)</li>
                                                <li>Directorship/Partnership-Company registration document or Dissolution document (if applicable)</li>
                                                <li>For freelance/Self-employed- Experience letters, Bank Statements or Client letters (if applicable)</li>
                                            </ul>
                                        </div>
                                        <div style="">
                                            5. <strong>Health Section</strong> :
                                            <ul>
                                                <li>Under Health Section you need to upload the Fitness Certificate signed by Registered Doctor / Practitioner.</li>
                                                <li>Undertaking, if you have any health issues.</li>
                                            </ul>
                                        </div>

                                         <p>Upon successfully updating your profile, an auto-generated confirmation will be sent to your registered email ID. </p>
                                         <p>Kindly note that our Recruitment Executives will validate and verify the submitted documents. Upon successful completion of this process,
                                          your candidature will progress to HR Discussion.</p>
                                         
                                         <p>For any inquiries or assistance regarding documents, please feel free to reach out to the concerned Recruitment Executive who processed your candidature. </p>
                                        
                                        <!-- <ol>
                                            <li>
                                                Soumyadip Chattopadhyay
                                                <br/>
                                                soumyadip.c@csm.tech
                                                <br/>
                                                9330546261
                                            </li>
                                        </ol> -->
                                        <p>Looking forward to working with you!</p>
                                        <p>Best Regards</p>
                                        <!-- <br/> Your Onboarding Advisor  -->
                                        <br/>
                                    </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </td>
                    </tr>
                    </tbody>
                </table>
	    ]]>
	  </field>
       </record>

        <record id="applicant_validate_template" model="mail.template">
            <field name="name">Document Verify e-mail template</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Verify The Documents</field>
            <field name="email_to">${object.email|safe}</field>
            <field name="email_cc">${ctx['email_cc']|safe}</field>
            <!-- <field name="lang">${object.lang}</field> -->
            <field name="model_id" ref="kw_onboarding.model_kwonboard_enrollment"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" >
            <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 0px; border-collapse:separate;">
                                <tbody>
                                <tr>
                                <td valign="top" style="font-size: 13px;">
                                    <div style="margin-left: 1.2rem;">
                                        <h5 style="font-weight: 400;margin: 0;font-size: 18px;color:#676767;">
                                            <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear</small>
                                             <strong>${object.name},</strong>
                                        </h5>
                                        <br/>
                                        <p style="font-size: 16px;">
                                            We wanted to bring to your attention that some documents are still pending for submission from your end since the initial document submission process. 
                                            It is crucial that we receive these documents promptly to ensure a smooth onboarding process.
                                        </p>
                                        <p style="font-size: 16px;">
                                            We kindly request that you submit the required documents to the onboarding team by the deadlines outlined below to prevent any potential delays or further actions:
                                        </p>
                                        <br/>
                                        <table border="1" style="border-left: 5px;font-size: 16px;">
                                            <tr>
                                                <td style="color:#167b9e;padding-left: 8px;padding-right:10px;border: 1px solid #ebe5e5;height: 34px;">
                                                    Documents Pending for Submission
                                                </td>
                                                <td style="color:#167b9e;padding-left: 8px;padding-right:10px;border: 1px solid #ebe5e5;height: 34px;">
                                                    Deadline Dates
                                                </td>
                                                
                                            </tr>
                                            % for rec in ctx['list_applicant_data']:
                                                <tr>
                                                    <td style="color:#676767;border: 1px solid #ebe5e5;height: 34px;padding-left: 8px;">
                                                        % if rec.get('name') == 'Educational':
                                                            Educational documents
                                                        % endif
                                                        % if rec.get('name') == 'Medical':
                                                            Personal document
                                                        % endif
                                                        % if rec.get('name') == 'Work':
                                                            Work Experience documents
                                                        % endif
                                                        % if rec.get('name') == 'Identity':
                                                             Identification documents
                                                        % endif
                                                    </td>
                                                    <td style="color:#676767;border: 1px solid #ebe5e5;height: 34px;padding-left: 8px;">
                                                        % if rec.get('name') == 'Educational':
                                                            ${rec.submit_date.strftime('%d-%m-%Y')}
                                                        % endif
                                                        % if rec.get('name') == 'Medical':
                                                            ${rec.submit_date.strftime('%d-%m-%Y')}
                                                        % endif
                                                        % if rec.get('name') == 'Work':
                                                           ${rec.submit_date.strftime('%d-%m-%Y')}
                                                        % endif
                                                        % if rec.get('name') == 'Identity':
                                                           ${rec.submit_date.strftime('%d-%m-%Y')}
                                                        % endif
                                                    </td>

                                                </tr>
                                           
                                            % endfor
                                        </table>
                                       
                                    </div>
                                    <div style="margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 1px;">
                                        <p>Thank You.</p>
                                        <p>
                                            % if object.env.user and object.env.user.signature:
                                                ${object.env.user.signature | safe}
                                            % endif
                                        </p>
                                    </div>  
                                </td>
                            </table>
                        </td>
                    </tr>
                </table>
              ]]>
	    </field>
       </record>
