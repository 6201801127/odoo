<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="otp_email_template" model="mail.template">
            <field name="name">OTP e-mail template</field>
            <field name="email_from">tendrils@csm.tech</field>
            <field name="subject">OTP For Onboarding @ ${object.company_id.name}</field>
            <field name="email_to">${object.email|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="kw_onboarding.model_kwonboard_enrollment"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;font-size: 18px;color:#676767;">
                                <small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small>
                                <strong>${object.name},</strong>
                            </h5>

                            <p style="color: #676767;line-height: 145%;font-size: 17px;">Welcome to ${object.company_id.name}.</p>
                            <p style="color: #676767;line-height: 145%;font-size: 17px;">${object.otp_number} is the One Time Password (OTP) for Onboarding process.</p>
                            <p style="color: #676767;line-height: 145%;font-size: 17px;">This OTP is usable only once and is valid for 10 mins.</p>
                            <p style="color: #676767;line-height: 145%;font-size: 17px;">Please do not share the OTP with anyone for security reasons.</p>
                            <br/>

                            <p style="color: #676767;line-height: 145%;font-size: 17px;">
                                Thanks & regards
                                <br/>
                                CSM Technologies Pvt. Ltd.
                            </p>
                            <br/>
                            <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>
    </data>
</odoo>