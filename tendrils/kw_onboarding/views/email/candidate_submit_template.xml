<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_candidate_submit_email_template" model="mail.template">
          <field name="name">Profile data submit template | Onboarding</field>
          <field name="email_from">tendrils@csm.tech</field>
          <field name="subject">Profile Data Submitted : ${object.name}</field>
          <field name="email_to">${ctx['email_to']}</field>
          <field name="email_cc">${ctx['email_cc']}</field>
          <field name="model_id" ref="kw_onboarding.model_kwonboard_enrollment"/>
          <field name="auto_delete" eval="False"/>
          <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                    <tr>
                        <td>
                            <div style="margin-left: 1.2rem;"> 
                                <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small> <strong>${ctx['email_name']}</strong>,</h5>
                                <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;"> <strong>${object.name}</strong> has submitted profile details successfully, please login to Tendrils and verify.<br/><br/><br/>
                                Thanks & regards <br/>
                                CSM Technologies Pvt. Ltd. <br/>
                                <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p></p>     
                            </div>
                        </td>
                    </tr>                
                </table> 
                ]]>   
               
            </field>

       </record>
    </data>
</odoo>