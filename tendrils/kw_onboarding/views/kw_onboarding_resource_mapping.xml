<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kwonboard_enrollment_mapping_tree" model="ir.ui.view">
			<field name="name">kwonboard_enrollment.tree</field>
			<field name="model">kwonboard_enrollment</field>
			<field name="priority" eval="10" />
			<field name="arch" type="xml">
				<tree string="Onboarding Resource Mapping" create='false' edit='false' delete='false'>
                    <field name="name" string="Name"/>
                    <field name="job_id" string="Job Position"/>
                    <field name="dept_name"/>
                    <field name="work_location_id"/>
                    <field name="tmp_join_date"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type"/>
                    <field name="mrf_id" string="MRF Reference"/>
                    <field name="state" invisible='1'/>
				</tree>
			</field>
		</record>

        <record id="kwonboard_enrollment_mapping_search" model="ir.ui.view">
			<field name="name">kwonboard_enrollment.view.search</field>
			<field name="model">kwonboard_enrollment</field>
			<field name="arch" type="xml">
				<search string="Search Description">
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="dept_name"/>
                    <field name="work_location_id"/>
                    <field name="tmp_join_date"/>
                    <field name="emp_role"/>
                    <field name="emp_category"/>
                    <field name="employement_type"/>
                    <field name="reference_no"/>
				</search>
			</field>
		</record>

        <record id="kwonboard_enrollment_mapping_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Onboarding Resource Mapping</field>
			<field name="res_model">kwonboard_enrollment</field>
			<field name="view_mode">tree</field>
			<field name="view_type">form</field>
			<field name='search_view_id' ref='kwonboard_enrollment_mapping_search'/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kwonboard_enrollment_mapping_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record to show...
                </p>
            </field>
        </record>

        <menuitem name="Onboarding Resource Mapping"
                  id="onboarding_resource_mapping_menu"
                  parent="kwonboard_report_menu"
                  action="kwonboard_enrollment_mapping_action"
                  sequence="2"
                  groups="group_kw_onboarding_manager,group_kw_onboarding_officer"/>

    </data>
</odoo>