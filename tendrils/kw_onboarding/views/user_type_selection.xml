<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- model.name form view -->
        <record id="kwonboard_usertypesel_form_view" model="ir.ui.view">
            <field name="name">User Tagging Selection</field>
            <field name="model">kwonboard_new_joinee</field>
            <field name="arch" type="xml">
                <form create='false' edit='false'>
                    <script>
                        $(document).ready(function(){
                            $(".modal-footer").hide();
                        });
                    </script>
                    <sheet>
                        <h1 class="text-center text-uppercase">User Tagging Selection</h1><br/>
                        <div class="row">
                            <div class="text-center col-sm-8 col-sm-offset-4 mx-auto">
                                <group>
                                    <field name="usersel" widget="radio" options="{'horizontal': true}"/>
                                    <field name="usersel_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'invisible':[('usersel','!=','existing')], 'required': [('usersel','=','existing')]}"/>
                                </group>
                                <button type="object" name="create_employee_user" class="text-center btn btn-success">Create Employee/User</button>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
