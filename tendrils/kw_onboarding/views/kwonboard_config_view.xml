<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="kwonboard_config_action_window_menu">
            <field name="name">Environment Configuration</field>
            <field name="res_model">kwonboard_config_type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="kw_emp_config_tree_view">
            <field name="name">Configuration Lists</field>
            <field name="model">kwonboard_config_type</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- <field name="configuration_type"/> -->
                    <field name="configuration_type_id"/>
                    <field name="authorized_group" 
                    widget="many2many_tags"
                    />
                </tree>
            </field>
        </record>

        <record id="kw_emp_config_form_view" model="ir.ui.view">
            <field name="name">Configuration Form</field>
            <field name="model">kwonboard_config_type</field>
            <field name="arch" type="xml">
                <form string="Config Type">
                    <sheet>
                        <group>
                            <field name="configuration_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            <!-- <field name="configuration_type" groups="base.group_no_one"/> -->
                            <field name="authorized_group" widget="many2many_tags"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="config_type_tree" model="ir.ui.view">
            <field name="name">Config Type Tree</field>
            <field name="model">kwonboard_config_type_master</field>
            <field name="arch" type="xml">
                <tree string="Config Type">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="config_type_form" model="ir.ui.view">
            <field name="name">Config Type Form</field>
            <field name="model">kwonboard_config_type_master</field>
            <field name="arch" type="xml">
                <form string="Config Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_config_type_master" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Config Types</field>
            <field name="res_model">kwonboard_config_type_master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
        <menuitem id="kwonboard_env_config_menu"
                  name="Environment Configuration"
                  parent="kwonboard_config_menu"
                  sequence="2"
                  action="kwonboard_config_action_window_menu"
                  groups="kw_onboarding.group_kw_onboarding_manager,group_kw_onboarding_officer"/>
        <menuitem name="Config Types"
                  parent="kwonboard_config_menu"
                  id="menu_config_type_master"
                  action="action_config_type_master"
                  groups="kw_onboarding.group_kw_onboarding_manager,group_kw_onboarding_officer"/>
    </data>
</odoo>