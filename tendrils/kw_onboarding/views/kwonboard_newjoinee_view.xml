<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- explicit tree view definition for kwonboard enrollment for new joinee: Opening -->
    <record id="hr_employees_view_tree" model="ir.ui.view">
        <field name="name">New Joinees View Tree</field>
        <field name="model">kwonboard_enrollment</field>
        <field name="arch" type="xml">
            <tree edit="false">
                <field name="reference_no"/>
                <field name="dept_name"/>
                <field name="name"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="state" string="Status"/>
                <field name="admin_setting_status" string="Admin Configuration"/>
                <field name="finance_setting_status" string="Finance Configuration"/>
                <field name="nsa_setting_status" string="IT Configuration"/>
                <field name="rcm_setting_status" string="RCM Configuration"/>
                <field name="emp_id" string="Related Employee" invisible="1"/>

                <button name="button_take_action" string="Take Action" class="oe_highlight " type="object" states="3" groups="kw_onboarding.group_kw_onboarding_manager,kw_onboarding.group_kw_onboarding_finance,kw_onboarding.group_kw_onboarding_nsa ,kw_onboarding.group_kw_onboarding_admin,kw_onboarding.group_kw_onboarding_rcm" />
                <button name="button_take_action" string="Move to Authentication" class="oe_highlight " type="object" states="4" groups="kw_onboarding.group_kw_onboarding_manager" />
            </tree>
        </field>
    </record>
    <!-- explicit tree view definition for kwonboard enrollment for new joinee: Ending -->



    <record id="kwonboard_enrollment_kanban_view" model="ir.ui.view">
            <field name="name">Onboarding Enrollment Kanban View </field>
            <field name="model">kwonboard_enrollment</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
               
                <kanban class="o_hr_employee_kanban">
                    <field name="id"/>
                  
                    <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                            <!-- Medium employee's picture -->
                            <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('kwonboard_enrollment', 'image', record.id.raw_value)})" role="img"/>
                            <!-- Employee's picture optimized for mobile -->
                            <div class="o_kanban_image d-md-none rounded-circle" t-attf-style="background-image: url(#{kanban_image('kwonboard_enrollment', 'image', record.id.raw_value)})" role="img"/>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.job_id.raw_value" class="o_kanban_record_subtitle"><field name="job_id"/></span>
                                    </div>
                                </div>
                                 <span t-if="record.dept_name.raw_value" class="o_kanban_record_subtitle"><field name="dept_name"/></span>
                                <ul>
                                    <li><field name="mobile"/></li>
                                    <li t-if="record.work_location.raw_value"><field name="work_location"/></li>
                                </ul>
                            </div>
                        </div>
                        </t>
                    </templates>
                </kanban>        

            </field>
        </record>

    <!-- kwonboard enrollment for new joinee actions window : Opening -->
    <record id="hr_employee_newjoinee_action" model="ir.actions.act_window">
        <field name="name">New Joinees</field>
        <field name="res_model">kwonboard_enrollment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_employees_view_tree"/>
        <field name="domain">[["state", "in", ["2","3","4","5"]]]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new employee
            </p>
        </field>
    </record>
    <!-- kwonboard enrollment for new joinee actions window : Ending -->

</odoo>