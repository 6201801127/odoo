<odoo>
    <data>
        <record id="exemployee_contact_update_wizard_form" model="ir.ui.view">
            <field name="name">Ex-Employee Contact Details Update Wizard Form</field>
            <field name="model">exemployee_contact_update_wizard</field>
            <field name="arch" type="xml">
                <form create='0' edit='0'>
                    <sheet>
                        <group>
                            <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                   required="1"/>
                            <field name="employee_email" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                   required="1"/>
                            <field name="employee_phn_no" options="{'no_open': True,'no_create':True,'no_edit':True}"
                                   required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Update Details" name="update_exemployee_details" type="object"
                                class="btn-success"/>
                        <button name="cancel" string="Cancel" special="cancel" type="object" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="exemployee_contact_details_update_wizard_action_window" model="ir.actions.act_window">
            <field name="name">Update Ex-Employee Contact</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exemployee_contact_update_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="exemployee_contact_update_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Update Ex-employee Contact"
                  parent="kw_onboarding.kwonboard_config_menu"
                  id="exemployee_contact_update_menu"
                  action="exemployee_contact_details_update_wizard_action_window"
                  sequence="100"/>

    </data>
</odoo>