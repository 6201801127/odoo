<odoo>
    <record id="paper_format_payslip" model="report.paperformat">
			<field name="name">Payslip Report</field>
			<field name="default" eval="True"/>
			<field name="format">A4</field>
			<field name="page_height">0</field>
			<field name="page_width">0</field>
			<field name="orientation">Landscape</field>
			<field name="margin_top">4</field>
			<field name="margin_bottom">4</field>
			<field name="margin_left">4</field>
			<field name="margin_right">4</field>
			<field name="header_line" eval="False"/>
			<field name="header_spacing">0</field>
			<field name="dpi">80</field>
		</record>

    <report 
            string="Payslip Report"
            id="action_payslip_report_payslips" 
            model="hr.payslip" 
            report_type="qweb-pdf" 
            attachment_use="True" 
            name="payslip_report.report_make_payslips_report_template_view"
            file="payslip_report.report_make_payslips_report_template_view"
            paperformat="payslip_report.paper_format_payslip"
            print_report_name="(object._get_report_filename())"

        />
		

</odoo>