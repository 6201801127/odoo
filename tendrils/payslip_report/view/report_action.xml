<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_payslip" model="report.paperformat">
            <field name="name">Payslip Report</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">70</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(4, ref('payslip_report.kw_print_salary_slip'))]"></field>
        </record>

        <report
            string="Salary Slip"
            id="kw_print_salary_slip"
            model="hr.payslip"
            report_type="qweb-pdf"
            name="payslip_report.report_make_payslips_report_template_view"
            file="payslip_report.report_make_payslips_report_template_view"
            paperformat="payslip_report.paperformat_payslip"
        />

    </data>
</odoo>