<odoo>
    <data>
        <record id="kw_attendance_swap_view_form" model="ir.ui.view">
            <field name="name">Request Of Swapping</field>
            <field name="model">kw_swap_attendance_wizard</field>
            <field name="arch" type="xml">
                <form string="Request Of Swapping">
                    <sheet>
                        <group>   
                            <group >
                                <!-- <field name="emp_id" invisible="1"/> -->
                                <field name="employee_id" invisible="0"/>
                                <field name="location_name" widget="radio" options="{'horizontal': true}"/>
                                <field name="date_of_start" options="{'datepicker':{'minDate': 'now'}}"/>
                                <field name="end_date_of"/>
                                <field name="reason_shift"/>
                            </group>
                            
                        </group> 
                    </sheet>
                    <footer>
                        <button name="action_button_view_form" type="object" class="btn btn-success btn-lg">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_attendance_shift_action_window">
            <field name="name">Request Of Swapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_swap_attendance_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="kw_attendance_swap_view_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>