<odoo>
    <data noupdate="1">
        <record id="workstation_assign_emp_cron_id" model="ir.cron">
            <field name="name">WS: Workstation Assign Rotation</field>
            <field name="model_id" ref="model_kw_workstation_assign"/>
            <field name="state">code</field>
            <field name="code">model.workstation_assign_emp_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
        </record>

        <record id="workstation_attendance_change_emp_cron_id" model="ir.cron">
            <field name="name">WS: Workstation Attendance Change</field>
            <field name="model_id" ref="model_kw_workstation_assign"/>
            <field name="state">code</field>
            <field name="code">model.weekly_workstation_attendance_mode_change()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="day_of_week">6</field> <!-- 6 corresponds to Sunday -->
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>