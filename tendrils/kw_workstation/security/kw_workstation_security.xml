<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <data noupdate='0'>
        <record model="ir.module.category" id="module_category_kw_workstation">
              <field name="name">Work Station</field>
              <field name="description">User access level for this module</field>
              <field name="sequence">5</field>
        </record>
        <record id="group_ws_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_kw_workstation"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_ws_manager" model="res.groups">
            <field name="name"> Manager </field>
            <field name="implied_ids" eval="[(4, ref('kw_workstation.group_ws_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin','base.user_root'))]"/>
            <field name="category_id" ref="module_category_kw_workstation" />
        </record>   

        <record id="group_ws_management" model="res.groups">
            <field name="name"> Management </field>
            <field name="category_id" ref="module_category_kw_workstation" />
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="group_ws_cc_notify" model="res.groups">
            <field name="name">CC Notify</field>
            <field name="category_id" ref="module_category_kw_workstation"/>
        </record>
    </data>
</odoo>
