<odoo>
	<data>
		<record id="kw_mis_ws_employee_list_tree" model="ir.ui.view">
			<field name="name">Workstation MIS</field>
			<field name="model">hr.employee.workstation.mis.report</field>
			<field name="arch" type="xml">
				<tree create="false" import="false">
					<field name="emp_id" invisible="1"/>
					<field name="job_branch_id"/>
					<field name="department_id"/>
					<field name="division" invisible="1"/>
					<field name="section" invisible="1"/>
					<field name="practise" invisible="1"/>
					<field name="sbu"/>
					<field name="representative_id"/>
					<field name="date_of_joining"/>

					<field name="emp_code"/>
					<field name="name" class="font-weight-bold"/>
					<field name="job_id"/>
					<field name="location"/>

					<field name="infrastructure" invisible="1"/>
					<field name="ws_branch_id" invisible="1"/>
					<field name="ws_branch_unit_id"/>
					<field name="ws_name" class="font-weight-bold"/>
					<field name="ws_workstation_type" invisible="1"/>

					<field name="parent_id"/>
					<field name="project_tagged"/>
					<field name="project_manager"/>

				</tree>
			</field>
		</record>

		<record id="kw_mis_ws_search_view" model="ir.ui.view">
			<field name="name">Workstation MIS search</field>
			<field name="model">hr.employee.workstation.mis.report</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" string="Employees" filter_domain="[('name','ilike',self)]"/>
					<field name="emp_code"/>

					<field name="parent_id"/>
					<field name="job_branch_id" string="Work Location"/>
					<field name="department_id"/>
					<field name="division" string="Division" invisible="1"/>
					<field name="section" string="Practise" invisible="1"/>
					<field name="practise" string="Section" invisible="1"/>
					<field name="sbu" string="SBU"/>
					<field name="project_tagged"/>
					<field name="project_manager"/>

					<field name="job_id"/>

					<field name="location"/>

					<field name="ws_name"/>
                    <field name="ws_branch_id" invisible="1"/>
                    <field name="ws_branch_unit_id"/>
                    <field name="ws_workstation_type" invisible="1"/>
                    <field name="infrastructure"/>
					
					<filter name="location" string="WFA" domain="[('location','ilike','wfa')]"/>
					<filter name="location" string="Onsite" domain="[('location','ilike','onsite')]"/>
					<filter name="location" string="Offsite" domain="[('location','ilike','offsite')]"/>
					<filter name="location" string="Hybrid" domain="[('location','ilike','hybrid')]"/>
					<separator/>
					<filter name="allotted" string="Allotted" domain="[('ws_name','!=',False)]"/>
					<filter name="not_allotted" string="Not Allotted" domain="[('ws_name','=',False)]"/>
				</search>
			</field>
		</record>			

        <record id="kw_mis_ws_employees_actions" model="ir.actions.act_window">
			<field name="name">Emp vs WS</field>
			<field name="res_model">hr.employee.workstation.mis.report</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="kw_mis_ws_employee_list_tree"/>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Records to take action...
				</p>
			</field>
		</record>

        <menuitem id="mis_ws_employee_menu"
				  name="Emp vs WS"
				  parent="kw_workstation.kw_workstation_management_root_menu"
				  action="kw_workstation.kw_mis_ws_employees_actions"
				  groups="kw_workstation.group_ws_manager,kw_workstation.group_ws_management"
				  sequence="1"/>
    </data>
</odoo>        