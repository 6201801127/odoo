<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_employee_hybrid_monthly_report_view_tree" model="ir.ui.view">
            <field name="name">view.kw_employee_workstation_hybrid_monthly</field>
            <field name="model">kw_emp_monthly_hybrid_report</field>
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="employee_id" invisible="1"/>
                    <field name="branch_id"/>
                    <field name="workstation_id"/>
                    <field name="assign_date"/>
                    <field name="emp_code"/>
                    <field name="emp_name"/>
                    <!-- <field name="week1"/>
                    <field name="week2"/>
                    <field name="week3"/>
                    <field name="week4"/>
                    <field name="week5"/> -->
                </tree>
            </field>
        </record>

        <record id="kw_employee_hybrid_monthly_report_view_search" model="ir.ui.view">
            <field name="name">view.kw_employee_workstation_hybrid_monthly_search</field>
            <field name="model">kw_emp_monthly_hybrid_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="branch_id"/>
                    <field name="workstation_id"/>
                    <field name="assign_date"/>
                    <filter string="This Month" domain="[('assign_date', 'like',context_today().strftime('%Y-%m'))]"
                            name="this_month_assign_date"/>
                    <separator/>
                    <filter string="Assign Date" name="filter_assign_date" date="assign_date"/>
                </search>
            </field>
        </record>

        <record id="kw_employee_workstation_hybrid_monthly_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Hybrid Monthly Report</field>
            <field name="res_model">kw_emp_monthly_hybrid_report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_employee_hybrid_monthly_report_view_tree"/>
            <field name="context">{'create':0,'delete':0,'edit':0, 'import':0, 'search_default_this_month_assign_date':1}</field>
        </record>

        <menuitem id="menu_kw_workstation_monthly_hybrid_menu"
                  name="Employees Monthly Hybrid report"
                  action="kw_employee_workstation_hybrid_monthly_report_act_window"
                  parent="kw_workstation.kw_workstation_menu_report"
                  sequence="10"/>

    </data>
</odoo>