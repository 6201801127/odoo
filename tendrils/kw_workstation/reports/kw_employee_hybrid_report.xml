<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kw_employee_hybrid_report_view_tree" model="ir.ui.view">
            <field name="name">view.kw_employee_workstation_hybrid_tree</field>
            <field name="model">kw_employee_hybrid_report</field>
            <field name="arch" type="xml">
                <tree import="false">
                    <field name="employee_id" invisible="1"/>
                    <field name="emp_code"/>
                    <field name="emp_name"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="ra_emp"/>
                    <field name="work_email_emp"/>
                    <field name="date_of_joining"/>
                    <field name="sbu" string="SBU"/>
                    <field name="job_branch_id"/>
                    <field name="workstation" string="WS Name"/>
                    <field name="working_mode" string="Work Mode This Week"/>
                    <field name="attendance_mode_ids" string="Attendance Mode" widget="many2many_tags"
										       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <!-- <field name="project"/>
                    <field name="project_manager_id"/>
                    <field name="infra_location" string="WS Location"/>
                    <field name="floor" string="WS Floor"/> -->
                </tree>
            </field>
        </record>

        <record id="kw_employee_workstation_hybrid_report_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Employee Hybrid Location Report</field>
            <field name="res_model">kw_employee_hybrid_report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="kw_employee_hybrid_report_view_tree"/>
        </record>

        <menuitem id="menu_kw_workstation_attendance_hybrid_menu"
                  name="Employees in Hybrid Mode"
                  action="kw_employee_workstation_hybrid_report_act_window"
                  parent="kw_workstation.kw_workstation_menu_report"
                  sequence="2"/>

    </data>
</odoo>