<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="kw_infra_master_action_window" model="ir.actions.act_window">
			<field name="name">Infrastructure Master</field>
			<field name="res_model">kw_workstation_infrastructure</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>


		<record id="kw_infra_master_view_tree" model="ir.ui.view">
			<field name="name">kw_infra_master.view.tree</field>
			<field name="model">kw_workstation_infrastructure</field>
			<field name="arch" type="xml">
				<tree>
					<!-- Add your fields here -->
					<field name="sequence" widget="handle"/>
					<field name="address_id" string="Branch/SBU"/>
					<field name="branch_unit_id" />
					<field name="name" string="Infra"/>
<!--					<field name="address_id" string="Location" context="{'show_address': 1}"-->
<!--					       options="{'always_reload': True,'highlight_first_line': True}"-->
<!--					       domain="[('is_company', '=',True)]"/>-->
					<field name="code" groups="base.group_no_one"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>


		<record id="kw_infra_master_view_form" model="ir.ui.view">
			<field name="name">kw_infra_master.view.form</field>
			<field name="model">kw_workstation_infrastructure</field>
			<field name="arch" type="xml">
				<form string="">
					<sheet>
						<group>
							<group>
								<!-- Add your fields here -->
<!--								<field name="address_id" string="Location" context="{'show_address': 1}"-->
<!--								       options="{'always_reload': True,'highlight_first_line': True}"-->
<!--								       domain="[('is_company', '=',True)]" edit="false" create="false"/>-->
								<field name="address_id" string="Branch/SBU"
								       options="{'no_open': True,'no_create':True,'no_edit':True, 'always_reload': True, 'highlight_first_line': True}"
										context="{'show_address': 1}"/>
								<field name="branch_unit_id" options="{'no_open': True,'no_create':True,'no_edit':True}"
									   domain="[('branch_id','=',address_id)]"/>
								<field name="name" string="Name"/>
								<field name="code"/>
								<!-- <field name="status" string="Status"/> -->
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>