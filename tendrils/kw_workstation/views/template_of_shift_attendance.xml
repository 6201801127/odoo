<odoo>
    <data >

        <record id="kw_shift_change_email_template" model="mail.template">
            <field name="name">Request of swapping</field>
            <field name="subject">Request of Change Shift</field>
            <field name="email_from">${object.env.user.employee_ids.work_email}</field>
            <field name="email_to">${ctx['mail_to']}</field>
            <field name="email_cc">${ctx['cc_mail']}</field>
            <field name="model_id" ref="model_kw_swap_workstation" />
            <field name="auto_delete" eval="False" />
            <field name="body_html">
                <![CDATA[
                <table>
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;">
                                    <p>
                                        <b>
                                            <span style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;"> Hi </span><strong>${ctx['user_name']},</strong>
                                        </b>
                                    </p>
                                    % if ctx['mail_for'] == 'Applied':
                                        <p>
                                            I want to change Shift from the date of : ${ctx['date_of']}.
                                        </p>
                                    % elif ctx['mail_for'] == 'Approved':
                                        Approved the shift change allocate workstation.
                                    % endif

                                </div>
                                <div style="margin-bottom:1em;font-size: 16px;color:#676767;padding-left: 1px;">
                                    <p>Thank You.</p>
                                    <p>
                                        % if object.env.user and object.env.user.signature:
                                            ${object.env.user.signature | safe}
                                        % endif
                                    </p>
                                </div>  
    
                            </td>
                        </tr>
                    </thead>
                </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>
