<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_system_tree_view" model="ir.ui.view">
            <field name="name">Employee System</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <tree string="Employee System" editable="top" create="false">
                    <!-- <field name="work_location_id" string="Location" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/> -->
                    <field name="job_branch_id" string="Branch/SBU" readonly="1"
                    options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="department_id" string="Department" readonly="1"
                    options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="division" string="Division" invisible="1"/>
                    <field name="image_small" string="Photo" class="oe_avatar" widget="image" invisible="1"/>
                    <field name="emp_code" string="Emp. Code" readonly="1"/>
                    <field name="name" string="Name" readonly="1"/>
                    <field name="job_id" string="Designation" readonly="1"
                    options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="location" string="Onsite/Offsite/WFA"/>
                    <field name="branch_unit_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <!-- <field name="infrastructure_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/> -->
                    <field name="workstation_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="issued_system"/>
                    <field name="is_wfh" string="WFH" widget="boolean_toggle" groups="hr.group_hr_manager"
                           readonly="1"/>
                    <field name="system_location"
                           attrs="{'readonly':[('issued_system','=','laptop')], 'required':[('issued_system','=','pc')]}"
                           invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="employement_type" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="kw_workstation_search_view" model="ir.ui.view">
            <field name="name">view.kw_visiting_card_apply.search</field>
            <field name="model">hr.employee</field>
            <field name="type">search</field>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <search>
					<field name="name"/>
					<field name="job_id"/>
					<field name="department_id"/>

					<separator/>
					<filter name="workstation_id" string="Assigned" domain="[('workstation_id','=','allocated')]"/>
					<separator/>
                    <filter name="workstation_id" string="Duplicate Assigned"
                            domain="[('workstation_id','=','double')]"/>
                    <separator/>
                    <filter name="workstation_id" string="Not Assigned"
                            domain="[('workstation_id','=','unallocated')]"/>
                </search>
            </field>
        </record>
        <!-- <record id="hr_view_inherit_filter" model="ir.ui.view">
			<field name="name">Resource Skill Filter</field>
				<field name="model">hr.employee</field>
				<field name="inherit_id" ref="hr.view_employee_filter"/>
				<field name="arch" type="xml">
				<xpath expr="//search/field[@name='name']" position="before">
					<field name="job_branch_id"/>
				</xpath>
			</field>
		</record> -->
        <record id="emp_vs_ws_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Emp vs WS</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('employement_type.code','!=','O')]</field>
			<field name="view_id" ref="employee_system_tree_view"/>
			<field name="search_view_id" ref="kw_workstation_search_view"/>
            <!-- <field name="search_view_id" ref="employe_sytem_search"/> -->
        </record>
<!--        <menuitem name="Emp vs WS" parent="kw_workstation_management" id="menu_employee_system"-->
<!--                  action="emp_vs_ws_action"/>-->
    </data>
</odoo>
