<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_workstation_type_master_action_window" model="ir.actions.act_window">
            <field name="name">Workstation Type Master</field>
            <field name="res_model">kw_workstation_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
        
       
        <record id="kw_workstation_type_master_view_tree" model="ir.ui.view">
            <field name="name">kw_workstation_type.view.tree</field>
            <field name="model">kw_workstation_type</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="sequence"  widget="handle"/>
                    <field name="name" string="Type"/>
                    <field name="total" />
                    <field name="assigned" />
                    <field name="unassigned" />
                    <field name="code" groups="base.group_no_one"/>
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        
        <record id="kw_workstation_type_master_view_form" model="ir.ui.view">
            <field name="name">kw_workstation_type.view.form</field>
            <field name="model">kw_workstation_type</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="name" string="Name" />
                                 <field name="code" string="Code" />
                                <!-- <field name="status" string="Status"/> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Color Coding View -->
        <record id="kw_workstation_legend_color_coding_form_view" model="ir.ui.view">
            <field name="name">workstation color code form view</field>
            <field name="model">kw_workstation_legend_color_coding</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name" />
                                 <field name="color_code" string="Color" />
                                 <field name="code" string="Code" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_workstation_legend_color_coding_tree_view" model="ir.ui.view">
            <field name="name">workstation color code tree view</field>
            <field name="model">kw_workstation_legend_color_coding</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="color_code" />
                    <field name="code" string="Code" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>
        <record id="kw_workstation_legend_color_coding_action_window" model="ir.actions.act_window">
            <field name="name">Workstation Color Coding</field>
            <field name="res_model">kw_workstation_legend_color_coding</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

    </data>
</odoo>