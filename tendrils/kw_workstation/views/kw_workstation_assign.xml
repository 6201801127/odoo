<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kw_workstation_assign_view_tree" model="ir.ui.view">
            <field name="name">kw_workstation_assign.view.tree</field>
            <field name="model">kw_workstation_assign</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="assign_date"/>
                    <field name="workstation_id"/>
                    <field name="employee_code"/>
                    <field name="employee_name"/>
                </tree>
            </field>
        </record>

        <record id="kw_workstation_assign_search_view" model="ir.ui.view">
            <field name="name">kw_workstation_assign.view.search</field>
			<field name="model">kw_workstation_assign</field>
			<field name="arch" type="xml">
				<search>
                    <field name="workstation_id"/>
                    <field name="employee_id"/>

                    <filter string="Today" name="filter_today" domain="[('assign_date','=',context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="filter_current_month" domain="[('assign_date', 'like',context_today().strftime('%Y-%m'))]"/>
                    <filter string="Assign Date" name="filter_assign_date" date="assign_date"/>
				</search>
			</field>
		</record>

        <record id="kw_workstation_assign_view_form" model="ir.ui.view">
            <field name="name">kw_workstation_assign.view.form</field>
            <field name="model">kw_workstation_assign</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="assign_date"/>
                                <field name="workstation_id"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <!-- <field name="active" string="Status"/> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kw_workstation_assign_action_window" model="ir.actions.act_window">
            <field name="name">Hybrid WS Assignments</field>
            <field name="res_model">kw_workstation_assign</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record id="kw_workstation_assign_wizard_view_form" model="ir.ui.view">
            <field name="name">kw_workstation_assign.wizard.view.form</field>
            <field name="model">workstation_assign_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="date_of_assign"/>
                                
                            </group>
                        </group>
                        <footer>
                            <center>
                                <button name="assign_workstation" type="object" string="Assign" class="btn-success" context="{'assign':True,'assign_date':date_of_assign}"/>
                                <button string="Cancel" class="btn-default" special="cancel" style="margin-left: 5px;"/>
                            </center>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_workstation_assign_wizard_action_window" model="ir.actions.act_window">
            <field name="name">Hybrid WS Assign</field>
            <field name="res_model">workstation_assign_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_kw_workstation_assign"
                  name="Hybrid WS Assign"
                  action="kw_workstation_assign_action_window"
                  parent="kw_workstation.kw_workstation_management_root_menu"
                  groups="kw_workstation.group_ws_manager"
                  sequence="3"/>

        <menuitem id="workstation_assign_log_menu"
                  name="Workstation Assign"
                  parent="disable_debug_mode.menu_technical_developer"
                  action="kw_workstation_assign_wizard_action_window"
                  groups="disable_debug_mode.group_developer"
                  sequence="130"/>
    </data>
</odoo>