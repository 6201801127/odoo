<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="kw_workstation_employee_view_tree" model="ir.ui.view">
			<field name="name">kw_workstation_employee.view.tree</field>
			<field name="model">kw_workstation_employee</field>
			<field name="arch" type="xml">
				<tree editable="bottom" create="false" delete="false">
					<!-- Add your fields here -->
					<field name="workstation_id" readonly="1"/>
					<field name="workstation_type" readonly="1"/>
					<field name="infrastructure" readonly="1"/>
					<field name="employee_id" options='{"no_open": True, "no_create": True}'/>
				</tree>
			</field>
		</record>

		<record id="kw_workstation_employee_view_search" model="ir.ui.view">
			<field name="name">kw_workstation_employee.search</field>
			<field name="model">kw_workstation_employee</field>
			<field name="arch" type="xml">
				<search string="Search">
					<field name="workstation_id" string="Workstation Id"/>
					<group expand="0" string="Group By">

						<filter name="assigned" string="Assigned" domain="[('employee_id','!=',False)]"/>
						<filter name="un_assigned" string="Un-assigned" domain="[('employee_id','=',False)]"/>
						<separator/>
						<filter name="workstation_type_CEOchamber" string="CEO Chamber"
						        domain="[('workstation_id.workstation_type.code','=','W06')]"/>
						<filter name="workstation_type_chamber" string="Chambers"
						        domain="[('workstation_id.workstation_type.code','=','W01')]"/>
						<filter name="workstation_type_Sr.WS" string="Sr. WS"
						        domain="[('workstation_id.workstation_type.code','=','W02')]"/>
						<filter name="workstation_type_Mid.WS" string="Mid. WS"
						        domain="[('workstation_id.workstation_type.code','=','W03')]"/>
						<filter name="workstation_type_RunningWS" string="Running WS"
						        domain="[('workstation_id.workstation_type.code','=','W04')]"/>
						<filter name="workstation_type_InternsWS" string="Interns WS"
						        domain="[('workstation_id.workstation_type.code','=','W07')]"/>
						<filter name="workstation_type_Reception" string="Reception"
						        domain="[('workstation_id.workstation_type.code','=','W05')]"/>
						<separator/>
						<filter name="infra_ocac_6th_floor" string="CSM HQ-OCAC/6th Floor"
						        domain="[('workstation_id.infrastructure.code','=','01')]"/>
						<filter name="infra__ocac_5th_floor" string="CSM HQ-OCAC/5th Floor"
						        domain="[('workstation_id.infrastructure.code','=','02')]"/>
						<filter name="infra_patia_g_floor" string="CSM HQ-Patia/G Floor"
						        domain="[('workstation_id.infrastructure.code','=','03')]"/>
						<filter name="infra_patia_1st_floor" string="CSM HQ-Patia/1st Floor"
						        domain="[('workstation_id.infrastructure.code','=','04')]"/>

					</group>
				</search>
			</field>
		</record>
		<record id="kw_workstation_employee_action_window" model="ir.actions.act_window">
			<field name="name">Workstation Employee Tagging</field>
			<field name="res_model">kw_workstation_employee</field>
			<field name="view_mode">tree</field>
			<field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_workstation_employee_view_tree')})]"/>
			<field name="view_type">form</field>
		</record>

	</data>
</odoo>