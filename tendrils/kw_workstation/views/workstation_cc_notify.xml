<odoo>
    <data>
        <record id="workstation_cc_tag_tree" model="ir.ui.view">
            <field name="name">Workstation cc tag employee tree view</field>
            <field name="model">kw_workstation_notify</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="emp_designation" widget="many2many_tags"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                    <field name="cc_emp" widget="many2many_tags"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                </tree>
            </field>
        </record>
        <record id="workstation_cc_tag_form" model="ir.ui.view">
            <field name="name">Workstation cc tag employee</field>
            <field name="model">kw_workstation_notify</field>
            <field name="arch" type="xml">
                <form duplicate='false'>
                    <sheet>
                        <group>
                            <group string="Employee">
                                <field name="emp_designation" widget="many2many_tags"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                            </group>

                        </group>
                        <group>
                            <group string="SBU/Horizontal head Employee">
                                <field name="cc_emp" widget="many2many_tags"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                            </group>
                        </group>
                        <button name="update_cc_group_access" string="Update CC group" class="btn-primary"
                                type="object"/>
                        <group>
                            <group string="CC Notify Employee">
                                <field name="employee_cc_log_ids" readonly="1" nolabel="1">
                                    <tree>
                                        <field name="empl_id"
                                               options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                                        <field name="designation_id"
                                               options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                                        <field name="workstation_notify_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="workstation_cc_notify_action" model="ir.actions.act_window">
            <field name="name">Workstation Notify</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kw_workstation_notify</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="CC Notify Tagged"
                  id="workstation_hybrid_assingn_emp_menu"
                  parent='kw_work_station_category'
                  action="workstation_cc_notify_action"
                  groups="kw_workstation.group_ws_manager"
                  sequence="5"/>
    </data>
</odoo>
