<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="kw_workstation_master_view_tree" model="ir.ui.view">
			<field name="name">kw_workstation_master.view.tree</field>
			<field name="model">kw_workstation_master</field>
			<field name="arch" type="xml">
				<tree editable="bottom" decoration-muted="(is_blocked)" decoration-primary= "(is_contractual)">
					<!-- Add your fields here -->
					<field name="branch_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="branch_unit_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="infrastructure" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="workstation_type"
					options="{'no_open': True,'no_create':True,'no_edit':True}"/>
					<field name="name" string="Workstation"/>
					<field name="employee_id" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_create_edit':True}"/>
					<field name="layout_id" groups="base.group_no_one"/>
					<field name="is_hybrid" widget="boolean_toggle"/>
					<field name="is_blocked" widget="boolean_toggle"/>
					<field name="is_contractual" widget="boolean_toggle"/>
					<field name="note" attrs="{'required':['|',('is_blocked','=',True),('is_contractual','=',True)]}"/>
					<field name="is_wfh" widget="boolean_toggle" invisible="1"/>
					<!-- <field name="employement_type" invisible="1"/> -->
				</tree>
			</field>
		</record>

		<record id="kw_workstation_master_action_window" model="ir.actions.act_window">
			<field name="name">Workstation Master</field>
			<field name="res_model">kw_workstation_master</field>
			<field name="view_mode">tree,pivot</field>
			<field name="view_type">form</field>
		</record>

		<record id="kw_workstation_master_view_search" model="ir.ui.view">
            <field name="name">kw_workstation_master.search</field>
            <field name="model">kw_workstation_master</field>
            <field name="arch" type="xml">
                <search string="Search">
	                <field name="name" />
	                <field name="branch_id" />
	                <field name="branch_unit_id" />
					<field name="infrastructure" />

					<field name="workstation_type" />
                    <field name="layout_id" />
                    <field name="employee_id" />
                    <group expand="0" string="Group By">
                        <filter name="branch_id" string="Branch"  context="{'group_by':'branch_id'}"/>
                        <filter name="branch_unit_id" string="Unit"  context="{'group_by':'branch_unit_id'}"/>
                        <filter name="infrastructure" string="Infra"  context="{'group_by':'infrastructure'}"/>
                        <filter name="workstation_type" string="Workstation Type"  context="{'group_by':'workstation_type'}"/>
                        <filter name="infrastructure_type" string="Infrastructure" context="{'group_by':'infrastructure'}" />
                    </group>
                </search>
            </field>
        </record>

	</data>
</odoo>