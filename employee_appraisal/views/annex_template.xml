<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id ="annex_form2_disagreed_report">
        <t t-call = "web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <br/>
                            <p>
                                <h2>
                                Certificate For Disclosure of Annual Performance Appraisal Report / 
                                वार्षिक प्रदर्शन मूल्यांकन रिपोर्ट के प्रकटीकरण के लिए प्रमाण पत्र<br></br>
                                </h2>
                            </p>
                        </div>
                        <br/>
                        <div>
                            <table class="table table-bordered">
                                <tr>
                                   <th colspan = "1">
                                       1.) Name of the Officer Reported upon / 
                                       अधिकारी का नाम जिस पर प्रतिवेदित किया गया है
                                   </th>

                                   <th colspan = "2">
                                       <span t-field="o.employee_id"/>
                                    </th>
                               </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                   <th colspan="1">
                                       2.) Year/Period of Report / रिपोर्ट का वर्ष/अवधि
                                   </th>
                                   <th colspan="2">
                                       <span t-field="o.apar_period_id"/>
                                   </th>
                               </tr>
                            </table>

                            <table class ="table table-bordered">
                                <tr>
                                   <th colspan="1">
                                       3.) Date of Disclosure of the APAR to the officer reported upon / रिपोर्ट किए जाने वाले अधिकारी को एपीएआर के प्रकटीकरण की तारीख
                                   </th>
                                   <th colspan="2">
                                       <span t-field="o.create_date"/>
                                   </th>
                               </tr>
                            </table>

                            <table class ="table table-bordered">
                                <tr>
                                   <th colspan="1">
                                       4.) Whether representation on the APAR received from the officer reported upon<br/> if reply to (4) above is YES, then: / 
                                       क्या रिपोर्ट किए गए अधिकारी से प्राप्त एपीएआर पर अभ्यावेदन<br/> यदि उपरोक्त (4) का उत्तर हाँ है, तो:
                                   </th>
                                   <th colspan="1">
                                       YES / हाँ
                                   </th>
                                    <th colspan="1">
                                        NO / नहीं
                                    </th>
                               </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <th colspan="1">
                                        5.) Date of receipt of the representation / अभ्यावेदन प्राप्त होने की तिथि
                                    </th>
                                    <th colspan="1">

                                    </th>
                                </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <th colspan="1">
                                        6.) Date of disclosure to the officer reported upon the decision on his/her representation after its consideration by the Competent Authority / सक्षम प्राधिकारी द्वारा विचार करने के बाद उसके अभ्यावेदन पर निर्णय पर रिपोर्ट किए गए अधिकारी को प्रकटीकरण की तिथि
                                    </th>

                                    <th colspan="1">

                                    </th>
                                </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <th colspan="1">
                                        7.) Remarks / 
                                        टिप्पणियां
                                    </th>

                                    <th colspan="1">

                                    </th>
                                </tr>
                            </table>
                            <br/>
                            <br/>


                            <style>
                               p {text-align: right;}
                           </style>
                               <p><b>Name of the Officer Reported upon / अधिकारी का नाम जिस पर प्रतिवेदित किया गया है</b></p>
                                <div style="width: 200px;
                                height: 50px;
                                border: 1px solid black;
                                box-sizing: border-box;
                                float:right;">
                                </div>

                            <table class="table table-bordered">
                                <tr>

                                </tr>
                            </table>

                            <style>
                                   p {text-align: right;}
                               </style>
                                   <p><b>Signature / हस्ताक्षर:</b></p>
                                   <div style="width: 125px;
                                    height: 40px;
                                    border: 1px solid black;
                                    box-sizing: border-box;
                                    float:right;">
                                   </div>

                            <table class="table table-bordered">
                                <tr>

                                </tr>
                            </table>
                            <style>
                                   p {text-align: right;}
                               </style>
                                   <p><b>Date / दिनांक:</b></p>
                                    <div style="width: 100px;
                                    height: 35px;
                                    border: 1px solid black;
                                    box-sizing: border-box;
                                    float:right;">
                                   </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
    id ="annex_form2_disagreed_id"
    string="Appraisal Report"
    model="bsscl.employee.appraisal"
    report_type="qweb-pdf"
    file="employee_appraisal.annex_form2_disagreed_report"
    name="employee_appraisal.annex_form2_disagreed_report"/>
</odoo>