<odoo>

    <!--=======Tree view of HR appraisal.template=======-->
    <record id="hr_appraisal_template_tree_view" model="ir.ui.view">
        <field name="name">appraisal.template.tree</field>
        <field name="model">appraisal.template</field>
        <field name="arch" type="xml">
            <tree string="HR appraisal templates">
                  <field name="name"/>
            </tree>
        </field>
    </record>

    <!--=======Form view of HR appraisal.template=======-->
    <record id="hr_appraisal_template_form_view" model="ir.ui.view">
        <field name="name">appraisal.template.tree</field>
        <field name="model">appraisal.template</field>
        <field name="arch" type="xml">
            <form string="Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string = "KPI/KPA / केपीआई/केपीए">
                            <separator string="Assessment of Work Output / कार्य आउटपुट का आकलन"/>
                            <field name="kpi_kpa_ids">
                                <tree editable="bottom">
                                    <field name="kpi_kpa_id" invisible="1"/>
                                    <field name="kra" invisible="1"/>
                                    <field name="kpi"/>
                                    <field name="weigtage"/>
                                </tree>
                            </field>
                            <separator string="Assessment of Personal Attributes / व्यक्तिगत गुणों का आकलन"/>
                             <field name="kpi_kpa_ids1">
                                <tree editable="bottom">
                                    <field name="kpi_kpa_id" invisible="1"/>
                                    <field name="kra" invisible="1"/>
                                    <field name="kpi"/>
                                    <field name="weigtage"/>
                                </tree>
                            </field>
                            <separator string="Assessment of functional competency / 
                            कार्यात्मक योग्यता का आकलन"/>
                             <field name="kpi_kpa_ids2">
                                <tree editable="bottom">
                                    <field name="kpi_kpa_id" invisible="1"/>
                                    <field name="kra" invisible="1"/>
                                    <field name="kpi"/>
                                    <field name="weigtage"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!--============Action view of Appraisal============-->
    <record id="template_menu_new_action" model="ir.actions.act_window">
        <field name="name">Template / आकार पट्ट</field>
        <field name="res_model">appraisal.template</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>