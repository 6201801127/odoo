<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- ************** BSSCL Appraisal category *************** -->
        <record id="bsscl_appraisal_category_id" model="ir.module.category">
            <field name="name">Appraisal</field>
            <field name="description">Help You For Appraisal</field>
            <field name="sequence">10</field>
        </record>
        <!-- ****************** end *************** -->

        <!-- ******************* BSSCL Appraisal Groups ************** -->
        <record id="appraisal_reporting_authority_group_id" model="res.groups">
            <field name="name">Reporting Authority</field>
            <field name="category_id" ref="bsscl_appraisal_category_id"/>
        </record>
        <record id="appraisal_reviewing_authority_group_id" model="res.groups">
            <field name="name">Reviewing Authority</field>
            <field name="category_id" ref="bsscl_appraisal_category_id"/>
        </record>
        <record id="appraisal_manager_group_id" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="bsscl_appraisal_category_id"/>
        </record>
        <record id="appraisal_user_group_id" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="bsscl_appraisal_category_id"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- ********************** end ******************** -->
        <!-- Set Default group   -->
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('employee_appraisal.appraisal_user_group_id'))]"/>
        </record>
         <!-- ******************* Ir rules defined from here  ********************* -->
        <record id="appraisal_rule_own_appraisal" model="ir.rule">
            <field name="name">Own Appraisal</field>
            <field ref="model_bsscl_employee_appraisal" name="model_id"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('appraisal_user_group_id'))]"/>
        </record>
    
        <record id="appraisal_reporting_auth_record_rule" model="ir.rule">
            <field name="name">Appraisal Reporting Auth</field>
            <field name="model_id" ref="model_bsscl_employee_appraisal"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.appraisal_reporting_officer.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('employee_appraisal.appraisal_reporting_authority_group_id'))]"/>
        </record>
    
        <record id="appraisal_reviewing_auth_record_rule" model="ir.rule">
            <field name="name">Appraisal Reviewing Auth</field>
            <field name="model_id" ref="model_bsscl_employee_appraisal"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.appraisal_reviewing_officer.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('employee_appraisal.appraisal_reviewing_authority_group_id'))]"/>
        </record>
    
        
         <!-- ********************** end ******************** -->
    </data>
    

</odoo>
