<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="bsap_feedback_page" name="Feedback BSAP">
            <style>
                .question {
                padding: 15px 0 5px;
                color: #095484;
                }
                .question-answer label {
                display: block;
                padding: 0 20px 10px 0;
                }
            </style>
            <t t-call="website.layout">

                <div class="banner-navigation" style="height: 83px !important; margin-top: -41px;">
                    <div class="container">
                        <nav aria-label="breadcrumb" class="breadcrumb-Area">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item text-white">
                                    <a href="/">
                                        <i class="bi bi-house-fill"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item active text-secondary"
                                    aria-current="page">Feedback</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="inner-layout">
                    <div class="container">
                        <div class="contact-area">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <h3 class="text-blue section__Heading">Feedback Form</h3>
                                    <div class="contact-location">
                                        <iframe
                                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3597.9547383638383!2d85.10023971538625!3d25.606420221258862!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39ed57f3558f0a63%3A0x7b8ea7b88cf3d91c!2sBihar%20Vikas%20Mission(BVM)!5e0!3m2!1sen!2sin!4v1641280081606!5m2!1sen!2sin"
                                            width="600" height="550" style="border:0;"
                                            allowfullscreen=""
                                            loading="lazy"></iframe>
                                    </div><br/>
                                    <div>
                                        <p>
                                            <strong class="text-blue">Address : </strong> Bihar
                                            Vikas Mission, Bihar State Building Construction
                                            Corporation Campus, Hospital Road, Rajvanshi Nagar,
                                            Patna - 800023 </p>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="contact-area mt-4">
                                        <!-- <div>
                                            <p>
                                                <strong class="text-blue">Address :</strong> Bihar
                                                Vikas Mission, Bihar State Building Construction
                                                Corporation Campus, Hospital Road, Rajvanshi Nagar,
                                                Patna - 800023 </p>
                                        </div> -->
                                        <div class="contact-form">
                                            <form action="/submit-feedback" method="post"
                                                class="was-validated">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <p class="question">Is this the first time you have visited the website?</p>
                                                        <div class="question-answer">
                                                            <label>
                                                                <input type="radio" value="yes" id="yes"
                                                                    name="visited" required="required"/> yes </label>
                                                            <label>
                                                                <input type="radio" value="no" id="no"
                                                                    name="visited" required="required"/> no </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <p class="question">What is the PRIMARY reason you came to the site?</p>
                                                        <textarea class="form-control"
                                                            id="reason" name="reason" required="required" rows="2"></textarea>
                                                    </div>
                                                    <div class="col-md-12 mt-2">
                                                        <p class="question">Please tell us how easy it is to find information on the site.</p>
                                                        <div class="question-answer">
                                                            <label>
                                                                <input type="radio" value="1" id="1" required="required"
                                                                    name="easy_level" /> Very Easy </label>
                                                            <label>
                                                                <input type="radio" value="2" id="2" required="required"
                                                                    name="easy_level" /> Easy </label>
                                                            <label>
                                                                <input type="radio" value="3" id="3" required="required"
                                                                    name="easy_level" /> Average </label>
                                                            <label>
                                                                <input type="radio" value="4" id="4" required="required"
                                                                    name="easy_level" /> Difficult </label>
                                                            <label>
                                                                <input type="radio" value="5" id="5" required="required"
                                                                    name="easy_level" /> Very Difficult </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mt-2">
                                                        <label for="email" class="form-label text-blue">Email</label>
                                                        <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email" required="required" />
                                                    </div>
                                                    <div class="mb-3 mt-2 col-md-12">
                                                        <label for="message"
                                                            class="form-label text-blue">Message
                                                        </label>
                                                        <textarea class="form-control"
                                                            id="message" required="required" name="message"
                                                            rows="3"></textarea>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <button type="submit"
                                                            class="btn btn-primary">Send <svg
                                                                xmlns="http://www.w3.org/2000/svg"
                                                                width="16"
                                                                height="16" fill="currentColor"
                                                                class="bi bi-send"
                                                                viewBox="0 0 16 16">
                                                                <path
                                                                    d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
                                                            </svg>
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </t>
        </template>
    </data>
</odoo>