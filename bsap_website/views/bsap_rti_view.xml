<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- model.name tree view -->
        <record id="rti_information_view_tree" model="ir.ui.view">
            <field name="name">basp.rti.information.tree</field>
            <field name="model">bsap.rti.information</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="file"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <!-- basp.rti.information form view -->
        <record id="rti_information_view_form" model="ir.ui.view">
            <field name="name">basp.rti.information.view.form</field>
            <field name="model">bsap.rti.information</field>
            <field name="arch" type="xml">
                <form string="">
                    <style>
                        .o_form_view .o_group.o_inner_group > tbody > tr > td.o_td_label{min-width: 200px !important;}
                      </style>
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="file" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- cms.faq action window -->
        <record id="rti_information_action" model="ir.actions.act_window">
            <field name="name">RTI</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bsap.rti.information</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                    Add your RTI information here !!!!
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <menuitem name="RTI" id="rti_information_menu" parent="website.menu_website_global_configuration" sequence="2"
		        action="rti_information_action"/>
    </data>
</odoo>