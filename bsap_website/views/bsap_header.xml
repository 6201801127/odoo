<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="bsap_header" name="BSAP Header" inherit_id="website.layout">
            <xpath expr="//header//nav" position="before">
                <header>
                    <div class="container">
                        <div class="header__layout">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6 align-self-start">
                                    <img src="/bsap_website/static/src/img/bihar-govt.png"
                                        alt="logo-one" class="header__imgOne" />
                                    <img src="/bsap_website/static/src/img/bsap-logo.png"
                                        alt="logo-two" class="header__imgTwo" />
                                    <div class="d-inline-block">
                                        <a href="/" class="text-decoration-none text-dark">
                                            <h3 class="d-inline-block  mb-0 logo-title">Bihar
                                                Special Armed Police</h3>
                                            <small class="d-block">Government of Bihar</small>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6 ">
                                    <div class="header__links">
                                        <ul class="list-unstyled float-end">
                                            <li class="blacktheme__box d-inline-block">
                                                <a href=""
                                                    class="blacktheme text-decoration-none d-block"
                                                    title="Contrast View">&amp;nbsp; </a>
                                            </li>
                                            <li class="whitetheme__box d-inline-block me-2">
                                                <a href=""
                                                    class="whitetheme text-decoration-none d-block"
                                                    title="Normal View">&amp;nbsp; </a>
                                            </li>
                                            <li class="d-inline-block ps-1 pe-1 bl-1 ps-2">
                                                <button id="increasetext" class="button-resizer">A+</button>
                                            </li>
                                            <li class="d-inline-block pe-1">
                                                <button id="resettext" class="button-resizer">A</button>
                                            </li>
                                            <li class="d-inline-block pe-2 ">
                                                <button id="decreasetext" class="button-resizer">A-</button>
                                            </li>
                                            <!-- <li class="d-inline-block pe-2 bl-1 ps-2"> <a
                                            href="/to-english" class="text-decoration-none
                                            text-secondary">English</a> /</li>
                                                    <li class="d-inline-block pe-2"><a href="/to-hindi" class="text-decoration-none
                                            text-secondary">हिन्दी</a></li> -->
                                            <li class="d-inline-block pe-2 bl-1 ps-2">
                                                <a href="/faq-bsap"
                                                    class="text-decoration-none text-secondary">FAQ</a>
                                            </li>
                                            <li class="d-inline-block pe-2">
                                                <a href="/rti-bsap"
                                                    class="text-decoration-none text-secondary">RTI</a>
                                            </li>
                                            <li class="d-inline-block pe-2">
                                                <a href="/feedback-bsap"
                                                    class="text-decoration-none text-secondary">
                                                    Feedback</a>
                                            </li>
                                            <li class="d-inline-block pe-2">
                                                <a href="/site-map"
                                                    class="text-decoration-none text-secondary">
                                                    Sitemap</a>
                                            </li>
                                            <li class="d-inline-block pe-2">
                                                <a href="/help"
                                                    class="text-decoration-none text-secondary">Help</a>
                                            </li>
                                        </ul>
                                        <div class="header__search float-end">
                                            <form class="d-inline-flex">
                                                <input
                                                    class="form-control   border-end-0  rounded-0 rounded-start"
                                                    type="search" placeholder="Search"
                                                    aria-label="Search" />
                                                <button
                                                    class="btn btn-secondary rounded-end rounded-0"
                                                    type="submit">
                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                        width="16" height="16" fill="currentColor"
                                                        class="bi bi-search" viewBox="0 0 16 16">
                                                        <path
                                                            d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                                    </svg>
                                                </button>
                                            </form>
                                            <div class="d-inline-block">
                                                <a class="btn btn-warning  text-white pe-3 ps-3 "
                                                    href="/web/login">
                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                        id="login" width="18.232" height="18.448"
                                                        viewBox="0 0 18.232 18.448">
                                                        <g id="Group_3" data-name="Group 3">
                                                            <g id="Group_2" data-name="Group 2"
                                                                transform="translate(0 0)">
                                                                <rect id="Rectangle_4"
                                                                    data-name="Rectangle 4"
                                                                    width="1" height="1"
                                                                    transform="translate(0 8.448)"
                                                                    fill="#fff" />
                                                                <rect id="Rectangle_5"
                                                                    data-name="Rectangle 5"
                                                                    width="1" height="1"
                                                                    transform="translate(2 8.448)"
                                                                    fill="#fff" />
                                                                <path id="Path_1" data-name="Path 1"
                                                                    d="M228.142,197.728l.816-.816,2.139,2.139-2.139,2.139-.816-.816.746-.746h-3.512v-1.154h3.512Z"
                                                                    transform="translate(-220.992 -189.819)"
                                                                    fill="#fff" />
                                                                <path id="Path_2" data-name="Path 2"
                                                                    d="M1.154,15.8a.577.577,0,0,0,.577.577H4.616V4.281A2.3,2.3,0,0,1,6.067,2.138l1.9-.76H1.731a.577.577,0,0,0-.577.577V5.994H0V1.955A1.731,1.731,0,0,1,1.731.224H11.54V17.386L7.587,18.573a2.329,2.329,0,0,1-.669.1,2.264,2.264,0,0,1-1.969-1.138H1.731A1.731,1.731,0,0,1,0,15.8V12.918H1.154Zm4.616.559a1.154,1.154,0,0,0,1.486,1.106l3.13-.939V1.654L6.5,3.212A1.147,1.147,0,0,0,5.77,4.281Z"
                                                                    transform="translate(6.692 -0.224)"
                                                                    fill="#fff" />
                                                            </g>
                                                        </g>
                                                    </svg>
                                                    LogIn </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </header>

            </xpath>

            <xpath expr="//header/nav" position="replace">
                <nav data-name="Navbar"
                    class="navbar navbar-expand-lg navbar-light bg-blue text-white main-menu o_colored_level o_cc shadow-sm">
                    <div id="top_menu_container" class="container">
                        <!-- Navbar Toggler -->
                        <t t-call="website.navbar_toggler">
                            <t t-set="_toggler_class" t-value="'ml-auto'" />
                        </t>
                        <!-- Navbar Collapse -->
                        <div id="top_menu_collapse"
                            class="collapse navbar-collapse order-last order-lg-0">
                            <t t-call="website.navbar_nav">
                                <t t-set="_nav_class" t-value="'flex-grow-1'" />
                                <!-- Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-value="'nav-item'" />
                                        <t t-set="link_class" t-value="'nav-link text-white'" />
                                    </t>
                                </t>
                            </t>
                        </div>
                        <!-- Language Selector -->
                        <t t-call="website.placeholder_header_language_selector">
                            <t t-set="_div_classes" t-value="'ml-2'" />
                        </t>
                        <!-- Button -->
                        <div class="oe_structure" id="oe_structure_header_default_1" />
                    </div>
                </nav>
            </xpath>
        </template>
    </data>
</odoo>