<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="bsap_manual_page" name="BSAP Manual">
            <style>
                * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                }

                body {
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica
                Neue", Arial, sans-serif;
                color: #333;
                }

                table {
                text-align: left;
                line-height: 40px;
                border-collapse: separate;
                border-spacing: 0;
                border: 2px solid #060001;
                width: 1100px;
                margin: 50px auto;
                border-radius: .25rem;
                padding-right: 2px;
                padding-left: 2px;
                }

                thead tr:first-child {
                background: #6892C0;
                color: #303131;
                border: none;
                text-align: left;
                }

                th:first-child,
                td:first-child {
                padding: 0 15px 0 20px;
                }

                th {
                font-weight: 500;
                }

                <!-- thead tr:last-child th {
                border-bottom: 3px solid #303131;
                } -->

                tbody tr:hover {
                background-color: #DAFCEB;
                cursor: default;
                }

                tbody tr:last-child td {
                border: none;
                }

                tbody td {
                border-bottom: 1px solid #303131;
                }

                td:last-child {
                text-align: right;
                padding-right: 10px;
                }

            </style>
            <t t-call="website.layout">
                <div class="banner-navigation" style="height: 83px !important; margin-top: -41px;">
                    <div class="container">
                        <nav aria-label="breadcrumb" class="breadcrumb-Area">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item text-white"><a href="/"><i class="bi bi-house-fill"></i></a></li>
                                <li class="breadcrumb-item active text-secondary" aria-current="page">Manual</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="inner-layout">
                    <div class="about__Section--Inner">
                        <div class="container">
                            <h3 class="text-blue section__Heading">BSAP Manual</h3>
                            <div class="table-responsive">
                                <table class="table  table-striped table-bordered ">
                                    <thead  class="table-primary">
                        <tr>
                            <th>Sr No.</th>
                            <th>Manual Name</th>
                            <th style="text-align:center">Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="i" t-value="0" />
                        <t t-foreach="bsap_manual" t-as="data">
                            <tr>
                                <t t-set="i" t-value="i+1"/>
                                <td><span t-esc="i"/> </td>
                                <td>
                                    <t t-esc="data.name" />
                                </td>
                                <td style="text-align:center">
                                    <a t-if="data.attachment and data.id in file_ids" t-att-href="'/manual/' + str(data.id)">Download Manual</a>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                </div></div></div></div>
            </t>
        </template>
    </data>

</odoo>
    