<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="exit_transfer_noc">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <style>
                        table {
                        font-family: arial, sans-serif;
                        border-collapse: collapse;
                        width: 100%;
                        }

                        td, th {
                        border: 1px solid #dddddd;
                        text-align: left;
                        padding: 8px;
                        }
                        tr:nth-child(even) {
                        background-color: #f5f3f3;
                        }
                    </style>
                    <div class="page">
                            <div>
                                <!-- <img src="exit_transfer_management/static/description/bsscl.png" width="150px" alt="logoimage"/> -->
                                <h1 style="color:#703BE7; font-weight: bolder;"><left><b>BSSCL</b></left></h1>
                            </div>
                    <div>
                    <br/>
                    <h2 style="color:brown;"><center><b>NO OBJECTION CERTIFICATE</b></center></h2>
                    <br/>
                        <p>
                        This certificate is to claim No Objection (NOC) for <b><span t-field="o.employee_id.name"/></b>, if he/she joins and provide his/her service to other organization.
                        It is to inform you that he/she has cleared all his balances and has been <b><span t-field="o.exit_type"/></b>.
                        His/Her reference id is <span t-field="o.name"/>.
                        </p>
                        <p>We wish him/her goodluck in the future.</p>
                        </div>
                        <div>
                        
                            <p>Please find all Department's remarks.</p>
                            <!-- <table class="table table-sm table-reports">
                                <tr>
                                    <th >
                                        Deputy Commissioner
                                    </th>
                                    <td >
                                        <span t-field="o.cc_action_taken_by.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th >
                                        Remarks
                                    </th>
                                    <td >
                                        <span t-field="o.cc_remark"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th >
                                        Remark Given on
                                    </th>
                                    <td >
                                        <span t-field="o.cc_action_taken_on"/>
                                    </td>
                                </tr>
                            </table> -->
                            <br/>
                            <hr/>
                            <br/>
                            <table class="table table-sm table-reports">
                               
                                <tr>
                                    <th >
                                        Manager
                                    </th>
                                    <td >
                                        <span t-field="o.cmd_action_taken_by.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th >
                                        Remarks
                                    </th>
                                    <td >
                                        <span t-field="o.commandant_remark"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th >
                                        Remark Given on
                                    </th>
                                    <td >
                                        <span t-field="o.cmd_action_taken_on"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
  


    <record id="paperformat_noc" model="report.paperformat">
        <field name="name">NOC Paperformat</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">220</field>
        <field name="margin_top">10</field>
        <field name="orientation">Portrait</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <report
    id="noc_exit_id"
    string="NOC"
    model="exit.transfer.management"
    report_type="qweb-pdf"
    menu="False"
    file="exit_transfer_management.exit_transfer_noc"
    paperformat="paperformat_noc"
    name="exit_transfer_management.exit_transfer_noc"/>
</odoo>
