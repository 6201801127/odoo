<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_applicant_job_offer_button_view" model="ir.ui.view">
        <field name="name">Hr Application form view</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='archive_applicant']" position="before">
                <field name="bool_stage" invisible="1" />
                <button name="action_quotation_send" string="Send Job Offer" type="object" attrs="{'invisible': [('bool_stage','==',True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>