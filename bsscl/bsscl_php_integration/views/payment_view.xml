<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_payment_details_tree" model="ir.ui.view">
            <field name="name">payment.details.tree</field>
            <field name="model">payment.details</field>
            <field name="arch" type="xml">
                <tree string="Property Payment Data" edit="0" create="0">
                    <field name="pid"/>
                    <field name="fin_year"/>
                    <field name="tax_amount"/>
                    <field name="arrear"/>
                    <field name="payment_mode"/>
                    <field name="paid_on"/>
                    <field name="transaction_ref_no"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="payment_details_form_view">
            <field name="name">payment.details.form</field>
            <field name="model">payment.details</field>
            <field name="priority" eval="1" />
            <field name="arch" type="xml">
                <form edit="0" create="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="pid"/>
                                <field name="fin_year"/>
                                <field name="tax_amount"/>
                                <field name="arrear"/>
                                <field name="payment_mode"/>
                                <field name="paid_on"/>
                                <field name="transaction_ref_no"/>
                                <field name="payment_type"/>
                            </group>
                            <group>
                                <field name="challan_no"/>
                                <field name="receipt_no"/>
                                <field name="received_by"/>
                                <field name="ptax_ref_no"/>
                                <field name="status"/>
                                <field name="remark"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Payment Details">
                                <field name="payment_detail_ids" editable="top">
                                    <tree>
                                        <field name="transaction_date"/>
                                        <field name="transaction_id"/>
                                        <field name="transaction_amount"/>
                                        <field name="transaction_mode"/>

                                    </tree>

                                </field>
                            </page>


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="action_payment_details" model="ir.actions.act_window">
            <field name="name">Property Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.details</field>
            <field name="context">{'group_by': 'data_type'}</field>

            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>




        <menuitem
                id="payment_sub_menu"
                name="Payments"
                parent="property_menu"
                action="action_payment_details"
                sequence="1"/>



    </data>
</odoo>