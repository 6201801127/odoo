<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_property_details_tree" model="ir.ui.view">
            <field name="name">property.details.tree</field>
            <field name="model">property.details</field>
            <field name="arch" type="xml">
                <tree string="Tax Data" edit="0" create="0">
                    <field name="data_type"/>
                    <field name="partner_id"/>
                    <field name="old_holding_no"/>
                    <field name="new_holding_no"/>
                    <field name="old_pid"/>
                    <field name="new_pid"/>
                    <field name="ward"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="property_details_form_view">
            <field name="name">property.details.form</field>
            <field name="model">property.details</field>
            <field name="priority" eval="1" />
            <field name="arch" type="xml">
                <form edit="0" create="0">

                    <sheet>

                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="old_holding_no"/>
                                <field name="new_holding_no"/>
                                <field name="old_pid"/>
                                <field name="new_pid"/>
                                <field name="ward"/>
                                <field name="active" readonly="1"/>
                                <field name="data_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="area"/>
                                <field name="builtup_area"/>
                                <field name="road"/>
                                <field name="road_type"/>
                                <field name="userid"/>
                                <field name="remark"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Floor Details" attrs="{'invisible':[('data_type','=', 'other')]}">
                                <field name="floor_ids" editable="top">
                                    <tree>
                                        <field name="floor_no"/>
                                        <field name="acquisition_year"/>
                                        <field name="type_of_use"/>
                                        <field name="construction_type"/>
                                        <field name="rateble_area"/>
                                        <field name="use_factor"/>
                                        <field name="occupancy_factor"/>
                                    </tree>

                                </field>
                            </page>


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="action_property_details" model="ir.actions.act_window">
            <field name="name">Property Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.details</field>
            <field name="context">{'group_by': 'data_type'}</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>



        <menuitem
                id="property_menu"
                name="Odoo/Php Integration"
                web_icon="bsscl_php_integration,static/description/icon.png"

                sequence="5"/>

        <!-- Child menu  -->
        <menuitem
                id="property_sub_menu"
                name="Property Details"
                parent="property_menu"
                action="action_property_details"
                sequence="1"/>



    </data>
</odoo>