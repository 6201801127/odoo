<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <!-- explicit tree view definition of kwonboard enrollment : Opening-->
        <record id="kwonboard_enrollment_view_tree" model="ir.ui.view">
            <field name="name">View Enrollment Details</field>
            <field name="model">kwonboard_enrollment</field>
            <field name="arch" type="xml">
                <tree import="false"
                      decoration-primary="state == '1'"
                      decoration-warning="state == '2'"
                      decoration-info="state == '3'"
                      decoration-success="state == '4'">
                    <field name="reference_no" invisible="1"/>
                    <field name="name"/>
                    <field name="otp_number"/>
                    <!--                    <field name="dept_name"/>-->
                    <!--                    <field name="division"/>-->
                    <!--                    <field name="section"/>-->
                    <!--                    <field name="practise"/>-->
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="state" string="Status"/>
                    <!--                    <field name="check_finance" invisible="1"/>-->
                    <!--                    <field name="check_it" invisible="1"/>-->
                    <!--                    <field name="check_admin" invisible="1"/>-->
                    <!--                    <field name="admin_setting_status" string="Admin Configuration" attrs="{'invisible': [('check_admin', '=', False)]}"/>-->
                    <!--                    <field name="finance_setting_status" string="Finance Configuration" attrs="{'invisible': [('check_finance', '=', False)]}"/>-->
                    <!--                    <field name="nsa_setting_status" string="IT Configuration" attrs="{'invisible': [('check_it', '=', False)]}"/>-->
                    <field name="emp_id" string="Related Employee" invisible="1"/>
                    <field name="applicant_father_name" string="Father's Name" invisible="1"/>
                    <field name="applicant_father_dob" string="Father's dob" invisible="1"/>
                    <field name="applicant_mother_name" string="Mother's Name" invisible="1"/>
                    <field name="applicant_mother_dob" string="Mother's dob" invisible="1"/>

                    <button name="button_take_action" string="Take Action" class="oe_highlight " type="object"
                            states="3"
                    />
                    <button name="button_take_action" string="Validate" class="oe_highlight " type="object" states="4"
                    />
                    <button name="button_enroll_document" class="oe_highlight" type="object" icon="fa-download fa-lg"

                            attrs="{'invisible': [('state', 'in', ['1','6'])]}"/>
                    <button name="button_send_invitation" class="oe_highlight" type="object" icon="fa-paper-plane fa-lg"

                            attrs="{'invisible': [('state', 'not in', ['1'])]}"/>
                </tree>
            </field>
        </record>
        <!-- explicit tree view definition of kwonboard enrollment : Ending-->

        <!-- explicit form view definition of kwonboard enrollment : Opening-->
