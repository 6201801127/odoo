                    </script>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Candidate's Name" required="True" style="width: 80%"/>

                            </h1>
                        </div>
                        <group>
                            <group string="Employee Enrollment" name="employee_enrollment">

                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                                       invisible="1"/>

                                <!--                                <field name="location_id" string="Base Location"-->
                                <!--                                       options='{"no_open": True, "no_create": True}' required="1" readonly="1"/>-->
                                <field name="job_id" required="1"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"
                                />
                                <field name="email"
                                />
                                <field name="mobile"
                                />
                                <field name="create_full_profile"
                                />
                                <field name="module_onboarding_mail_status"/>
                                <field name="module_onboarding_sms_status"/>
                                <field name="tmp_join_date"/>

                            </group>
                            <group>
                                <field name="firstname"/>
                                <field name="middlename"/>
                                <field name="lastname"/>
                                <field name="whatsapp_no"/>
                                <field name="reference_no"/>
                                <field name="emp_id" readonly="1"/>
                                <field name="emgr_contact"/>
                                <field name="emgr_phone"/>
                                <field name="company_id"/>
                                <!--                                <field name="location_id"/>-->
                                <field name="work_location_id"/>
                                <field name="work_location"/>
                            </group>
                            <group>
                                <field name="birthday"/>
                                <field name="blood_group"/>
                                <field name="emp_religion"/>
                                <field name="applicant_father_name"/>
                                <field name="applicant_father_dob"/>
                                <field name="applicant_mother_name"/>
                                <field name="applicant_mother_dob"/>
                                <field name="personal_bank_name"/>
                                <field name="personal_bank_account"/>
                                <field name="personal_bank_ifsc"/>
                                <field name="uan_id"/>
                                <field name="esi_id"/>
                            </group>
                            <group string="Contact Information">
                                <!-- <field name="address_ids" /> -->
                                <group>
                                    <label for="present_addr_street" string="Present Address"/>
                                    <div class="o_address_format">
                                        <field name="present_addr_street" placeholder="Address Line 1..."
                                               class="o_address_street"/>
                                        <field name="present_addr_street2" placeholder="Address Line 2..."
                                               class="o_address_street"/>
                                        <field name="present_addr_country_id" placeholder="Country"
                                               class="o_address_country" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="present_addr_city" placeholder="City" class="o_address_city"/>
                                        <field name="present_addr_state_id" class="o_address_state"
                                               placeholder="State" options="{'no_open': True}"/>
                                        <field name="present_addr_zip" placeholder="ZIP" class="o_address_zip"
                                               attrs="{'required':[('create_full_profile', '=', True)]}"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="same_address"/>
                                    <label for="permanent_addr_street" string="Permanent Address"/>
                                    <div class="o_address_format">
                                        <field name="permanent_addr_street" placeholder="Address Line 1..."
                                               class="o_address_street"/>
                                        <field name="permanent_addr_street2" placeholder="Address Line 2..."
                                               class="o_address_street"/>
                                        <field name="permanent_addr_country_id" placeholder="Country"
                                               class="o_address_country" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                        <field name="permanent_addr_city" placeholder="City"
                                               class="o_address_city"/>
                                        <field name="permanent_addr_state_id" class="o_address_state"
                                               placeholder="State" options="{'no_open': True}"/>
                                        <field name="permanent_addr_zip" placeholder="ZIP" class="o_address_zip"
                                               attrs="{'required':[('create_full_profile', '=', True)]}"/>
                                    </div>
                                </group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Work Experience">
                                <group string="Work Experience">
                                    <field name="experience_sts" invisible="1"/>
                                    <field name="work_experience_ids">
                                        <form>
                                            <script>
                                                $(document).ready(function(){
                                                $(".modal-title").show();
                                                });
                                            </script>
                                            <group string="Work Experience Details">
                                                <group>
                                                    <field name="country_id"
                                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                                    <field name="name"/>
                                                    <field name="designation_name"/>
                                                    <field name="organization_type"
                                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                                </group>
                                                <group>
                                                    <field name="industry_type"
                                                           options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                                    <field name="effective_from"/>
                                                    <field name="effective_to"/>
                                                    <field name="uploaded_doc"/>
                                                    <p>(Only .jpeg,.png, .pdf format are allowed.Maximum file size is 4
                                                        MB) ⁣*
                                                    </p>
                                                </group>
                                            </group>
                                        </form>
                                        <tree>
                                            <field name="country_id"/>
                                            <field name="name"/>
                                            <field name="designation_name"/>
                                            <field name="organization_type"/>
                                            <field name="industry_type"/>
                                            <field name="effective_from"/>
                                            <field name="effective_to"/>
                                            <field name="uploaded_doc"/>
                                        </tree>
                                    </field>
                                </group>

                            </page>
                            <page string="Educational Details">
                                <group >
                                    <field name="educational_ids" />

                                </group>
                            </page>
                            <page string="Indentification Details">
                                <group>
                                    <field name="identification_ids" />
                                </group>
                            </page>
                        </notebook>



                    </sheet>
                      <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>

            </field>
        </record>



</odoo>
