<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_grade_pay_tree" model="ir.ui.view">
			<field name="name">kw_grade_pay.tree</field>
			<field name="model">kw_grade_pay</field>
			<field name="arch" type="xml">
				<tree string="Grade pay">
                    <field name="country"/>
                    <field name="grade"/>
                    <field name="band"/>
                    <field name="basic_min"/>
                    <field name="basic_max"/>
                    <field name="increment"/>
				</tree>
			</field>
		</record>

        <record id="kw_grade_pay_form" model="ir.ui.view">
			<field name="name">kw_grade_pay.form</field>
			<field name="model">kw_grade_pay</field>
			<field name="arch" type="xml">
				<form string="Card Master">
					<sheet>
						<group>
							<group>
								<field name="has_band" invisible='1'/>
                                <field name="country" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="grade" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="band" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly':[('has_band','=',False)]}"/>
								<field name="basic_min"/>
								<field name="basic_max"/>
								<field name="increment"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

        <record id="kw_grade_pay_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Grade pay</field>
			<field name="res_model">kw_grade_pay</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_grade_pay_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_grade_pay_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record to show...
                </p>
            </field>
		</record>

         <menuitem id="kw_grade_pay_menu" name="Grade pay" parent="kwonboard_config_menu"
                  sequence="90" action="kw_grade_pay_action"/>
    </data>
</odoo>