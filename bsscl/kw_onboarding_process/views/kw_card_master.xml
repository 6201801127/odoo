<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_card_master_tree" model="ir.ui.view">
			<field name="name">kw_card_master.tree</field>
			<field name="model">kw_card_master</field>
			<field name="arch" type="xml">
				<tree string="Card Master">
					<field name="name"/>
					<field name="description"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>

        <record id="kw_card_master_form" model="ir.ui.view">
			<field name="name">kw_card_master.form</field>
			<field name="model">kw_card_master</field>
			<field name="arch" type="xml">
				<form string="Card Master">
					<sheet>
						<group>
							<group>
								<field name="name"/>
                                <field name="description"/>
                                <field name="active"/>
								<field name="state"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

        <record id="kw_card_master_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Card Master</field>
			<field name="res_model">kw_card_master</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>

    </data>
</odoo>