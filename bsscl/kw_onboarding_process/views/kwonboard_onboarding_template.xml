<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="website_pages_form_view" model="website.page">
            <field name="name">Onboarding Process</field>
            <field name="url">/onboarding</field>
            <field name="website_published">False</field>
            <field name="type">qweb</field>
            <field name="key">kw_onboarding_process.onboarding_page</field>
            <field name="website_published">True</field>
            <field name="arch" type="xml">


                <t t-name="kw_onboarding_process.kwonboard_onboarding">
                    <t t-call="website.layout">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-sm-offset-6 col-md-7">
                                    <div class="card py-4 pl-5 pr-5">
                                        <div class="card-body">
                                            <form name="frm_onboarding" id="frm_onboarding" class="form-horizontal" method="post" action="javascript:void(0)" autocomplete="off">
                                                <div class="md-form">
                                                    <input type="text" class="form-control txtvalid"  id="txtMobNum" name="txtMobNum" maxlength='10' />
                                                    <label for="txtMobNum" class="font-weight-light reg"> Registered Mobile Number </label>
                                                    <span id="errspan" class="text-warning"/>
                                                </div>

                                                <div class="d-flex justify-content-center">
                                                    <div class="col-sm-12 text-center">
                                                        <button type="submit" class="btn btn-warning font-weight-bold" id="btnSubmitMobile"> Submit </button>
                                                        <button type="reset" class="btn btn-danger closepage font-weight-bold"> Reset </button>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="OTPnumber" tabindex="-1" role="dialog" aria-labelledby="OnboardingOTP" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered modal-primary" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header text-center">
                                                                <h4 class="modal-title w-100 font-weight-bold"> OTP Verification </h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span>&amp;times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body mx-3" id="popup">
                                                                <div class="text-center">
                                                                    <span class="text-danger" id="desc"/>
                                                                </div>
                                                                <div class="md-form mx-5">
                                                                    <input type="text" class="form-control txtvalid otptext" id="txtOtpNum" name="txtOtpNum" maxlength='4' />
                                                                    <label for="txtOtpNum" class="font-weight-bold grey-text reg"> Enter OTP </label>
                                                                    <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                                    <div class="text-left mx-1" id="resultdata"/>
                                                                </div>
                                                                <div class="text-left mx-5">
                                                                    <label for="Time Left" class="col-form-label"> Time Left: </label> &amp;emsp;
                                                                    <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer d-flex justify-content-between">
                                                                <button type="button" class="btn btn-success font-weight-bold" id="resendotp"> Resend OTP</button>
                                                                <button type="button" class="btn btn-primary font-weight-bold" id="btnSubmit">Submit</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="oe_structure"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>



        <record id="onboarding_page_link" model="website.menu">
            <field name="name">Onboarding</field>
            <field name="url">/onboarding</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>

        <template id="kwonboard_onboarding">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-sm-6 col-sm-offset-6 col-md-7">
                            <div class="card py-4 pl-5 pr-5">
                                <div class="card-body">
                                    <form name="frm_onboarding" id="frm_onboarding" class="form-horizontal" method="post" action="javascript:void(0)" autocomplete="off">
                                        <div class="md-form">
                                            <input type="text" class="form-control txtvalid " t-att-value="request.params.get('txtMobNum')" id="txtMobNum" name="txtMobNum" maxlength='10' />
                                            <label for="txtMobNum" class="font-weight-light reg"> Registered Mobile Number </label>
                                            <span id="errspan" class="text-danger"/>
                                        </div>

                                        <div class="row d-flex justify-content-between">
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-warning font-weight-bold" id="btnSubmitMobile"> Submit </button>
                                                <!-- <button type="reset" class="btn btn-danger closepage font-weight-bold pull-right"> Reset </button> -->
                                            </div>
                                        </div>
                                        <div class="modal fade col-sm-4 col-md-4 col-lg-4 col-xl-4 mx-auto" id="OTPnumber" tabindex="-1" role="dialog" aria-labelledby="OnboardingOTP" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-primary" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header text-center">
                                                        <h4 class="modal-title w-100 font-weight-bold"> OTP Verification </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span>&amp;times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body" id="popup">
                                                        <div class="text-center">
                                                            <span class="text-danger" id="desc"/>
                                                        </div>
                                                        <div class="md-form mx-3">
                                                            <input type="text" class="form-control txtvalid otptext" id="txtOtpNum" name="txtOtpNum" maxlength='4' />
                                                            <label for="txtOtpNum" class="font-weight-light grey-text reg"> Enter OTP </label>
                                                            <div class="text-left mx-1"> <span class='text-danger' id="rmvid"/> </div>
                                                            <div class="text-left mx-1" id="resultdata"/>
                                                        </div>
                                                        <div class="text-left mx-3">
                                                            <label for="Time Left" class="col-form-label"> Time Left: </label> &amp;emsp;
                                                            <span class="text-success font-weight-bold mt-2" id="time_left"/>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer d-flex justify-content-between">
                                                        <button type="button" class="btn btn-primary font-weight-bold" id="btnSubmit">Submit</button>
                                                        <button type="button" class="btn btn-success font-weight-bold mx-3" id="resendotp"> Resend OTP</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="oe_structure"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>


