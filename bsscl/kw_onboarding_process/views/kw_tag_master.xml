<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="kw_tag_master_tree" model="ir.ui.view">
			<field name="name">kw_tag_master.tree</field>
			<field name="model">kw_tag_master</field>
			<field name="arch" type="xml">
				<tree string="Tag Master">
					<field name="sequence" widget="handle"/>
					<field name="name"/>
					<field name="code"/>
					<field name="department_id"/>
					<field name="active" widget="boolean_toggle"/>
				</tree>
			</field>
		</record>

		<record id="kw_tag_master_form" model="ir.ui.view">
			<field name="name">kw_tag_master.form</field>
			<field name="model">kw_tag_master</field>
			<field name="arch" type="xml">
				<form string="Tag Master">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="code"/>
								<field name="department_id"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="kw_tag_master_action" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Tag Master</field>
			<field name="res_model">kw_tag_master</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>
    </data>
</odoo>