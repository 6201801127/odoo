        <record model="ir.ui.view" id="hr_applicant_view_form_inherit">
            <field name="name">Jobs - Recruitment Form</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Jobs - Recruitment Form" class="o_applicant_form">
                        <header>
                            <button string="Create Employee / कर्मचारी बनाएँ" name="create_employee_from_applicant" type="object"
                                    class="oe_highlight o_create_employee" attrs="{'invisible': ['|',('emp_id', '!=', False),('active', '=', False)]}"/>
                            <button string="Refuse / अस्वीकार करना" name="archive_applicant" type="object" attrs="{'invisible': [('active', '=', False)]}"/>
                            <button string="Restore / पुनर्स्थापित करना" name="toggle_active" type="object" attrs="{'invisible': [('active', '=', True)]}"/>
                            <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}" attrs="{'invisible': [('active', '=', False),('emp_id', '=', False)]}"/>
                        </header>
                        <sheet>
                            <div class="oe_button_box" name="button_box">
                                <button name="action_applications_email"
                                        class="oe_stat_button"
                                        icon="fa-pencil"
                                        type="object"
                                        context="{'active_test': False}"
                                        attrs="{'invisible': [('application_count', '=', 0)]}">
                                    <field name="application_count" widget="statinfo" string="Other Applications / अन्य अनुप्रयोगों"/>
                                </button>
                                <button name="action_makeMeeting" class="oe_stat_button" icon="fa-calendar" type="object"
                                        help="Schedule interview with this applicant">
                                    <field name="meeting_count" widget="statinfo" string="Meetings / बैठक"/>
                                </button>
                            </div>
                            <widget name="web_ribbon" title="Refused" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                            <field name="kanban_state" widget="kanban_state_selection"/>
                            <field name="active" invisible="1"/>
                            <field name="legend_normal" invisible="1"/>
                            <field name="legend_blocked" invisible="1"/>
                            <field name="legend_done" invisible="1"/>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only" string="Subject / Application Name / विषय/आवेदन का नाम"/>
                                <h1><field name="name"/></h1>
                                <h2 class="o_row">
                                    <div>
                                        <label for="partner_name" class="oe_edit_only" string="Applicant's Name  / आवेदक का नाम"/>
                                        <field name="partner_name"/>
                                    </div>
                                </h2>
                            </div>
                            <group>
                                <group>
                                    <field name="partner_id" invisible="1" string="Contact / अनुबंध" />
                                    <field name="refuse_reason_id" attrs="{'invisible': [('active', '=', True)]}"/>
                                    <field name="email_from" widget="email" string="Email / ईमेल"/>
                                    <field name="email_cc" string ="Email cc / ईमेल सी.सी" groups="base.group_no_one"/>
                                    <field name="partner_phone" widget="phone" string="Phone / फ़ोन"/>
                                    <field name="partner_mobile" widget="phone" string="Mobile / मोबाइल"/>
                                    <field name="type_id" placeholder="Degree" string="Degree / उपाधी"/>
                                </group>
                                <group>
                                    <field name="categ_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" string="Tags / टग"/>
                                    <field name="user_id" domain="[('share', '=', False)]" string="Recruiter / भर्तीकर्ता"/>
                                    <field name="priority" widget="priority" string="Appreciation / प्राथमिकता"/>
                                    <field name="medium_id" string="Medium / मध्यम" groups="base.group_no_one" />
                                    <field name="source_id" string="Source / स्रोत"/>
                                </group>
                                <group string="Job / नौकरी">
                                    <field name="job_id" string="Applied Job / नौकरी के लिए आवेदन किया"/>
                                    <field name="department_id" string="Department / विभाग"/>
                                    <field name="company_id" groups="base.group_multi_company" options='{"no_open":True}' />
                                </group>
                                <group string="Contract / नुबंध">
                                    <label for="salary_expected" invisible='1'/>
                                    <div class="o_row" invisible='1'>
                                        <field name="salary_expected" />
                                        <span attrs="{'invisible':[('salary_expected_extra','=',False)]}"> + </span>
                                        <field name="salary_expected_extra" placeholder="Extra advantages..."/>
                                    </div>
                                    <label for="salary_proposed" string="Proposed Salary / प्रस्तावित वेतन"/>
                                    <div class="o_row">
                                        <field name="salary_proposed"/>
                                        <span attrs="{'invisible':[('salary_proposed_extra','=',False)]}"> + </span>
                                        <field name="salary_proposed_extra" placeholder="Extra advantages..."/>
                                    </div>
                                    <field name="availability" string="Availability / उपलब्धता"/>
                                    <field name="emp_id" invisible="1"/>
                                </group>
                            </group>
                            <separator string="Application Summary / आवेदन सारांश"/>
                            <field name="description" placeholder="Feedback of interviews / साक्षात्कारों की प्रतिक्रिया..."/>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids" options="{'open_attachments': True}"/>
                        </div>
                    </form>


                </xpath>
            </field>
        </record>


