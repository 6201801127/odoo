        <record id="mail_activity_type_view_tree_inherit" model="ir.ui.view">
            <field name="name">mail.activity.type.view.tree</field>
            <field name="model">mail.activity.type</field>
            <field name="inherit_id" ref="mail.mail_activity_type_view_tree"/>
            <field name="arch" type="xml">
             <xpath expr='//tree' position='replace'>
                <tree string="Activities / गतिविधियाँ" sample="1">
                    <field name="sequence" string="Sequence / अनुक्रम" widget="handle"/>
                    <field name="name" string="Name / नाम"/>
                    <field name="summary" string="Default Summary / डिफ़ॉल्ट सारांश"/>
                    <field name="delay_label" string="Planned in / में योजना बनाई" class="text-right"/>
                    <field name="delay_from" string="Type / प्रकार"/>
                    <field name="res_model_id" string="Model / नमूना" groups="base.group_no_one"/>
                    <field name="icon" groups="base.group_no_one" string="Icon / आइकन"/>
                </tree>
            </xpath>
            </field>
        </record>

        <record id="mail.mail_activity_type_view_form" model="ir.ui.view">
            <field name="name">mail.activity.type.view.form</field>
            <field name="model">mail.activity.type</field>
            <!-- <field name="inherit_id" ref="mail.mail_activity_type_view_form"/> -->
            <field name="arch" type="xml">
                <!-- <xpath expr='//from' position='replace'> -->
                    <form string="Activities / गतिविधियाँ">
                        <sheet>
                            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1><field name="name"/></h1>
                            </div>
                            <group>
                                <group name="activity_details">
                                    <field name="active" invisible="1"/>
                                    <field name="category" string="Action to Perform / करने की क्रिया"/>
                                    <field name="default_user_id" string="Default User / डिफॉल्ट उपयोगकर्ता" options="{'no_create': True, 'no_edit': True}" domain="[('share', '=', False)]"/>
                                    <field name="res_model_id" string="Model / नमूना" groups="base.group_no_one"/>
                                    <field name="res_model_change" invisible="1"/>
                                    <field name="initial_res_model_id" invisible="1"/>
                                    <field name="summary" string="Default Summary / डिफ़ॉल्ट सारांश"/>
                                    <field name="icon" groups="base.group_no_one" string="Icon / आइकन"/>
                                    <field name="decoration_type" string="Decoration Type / सजावट का प्रकार" groups="base.group_no_one"/>
                                </group>
                                <group name="activity_planning">
                                    <field name="force_next" string="Trigger Next Activity / ट्रिगर अगली गतिविधि"/>
                                    <field name="default_next_type_id" string="Default Next Activity / डिफ़ॉल्ट अगली गतिविधि" attrs="{'required': [('force_next', '=', True)]}" context="{'default_res_model_id': res_model_id}"/>
                                    <field name="next_type_ids" widget="many2many_tags"
                                        attrs="{'invisible': ['|', ('force_next', '=', True), ('category', '=', 'upload_file')]}" context="{'default_res_model_id': res_model_id}" string="Recommended Next Activities / अनुशंसित अगली गतिविधियाँ"/>
                                    <field name="mail_template_ids" widget="many2many_tags"
                                        domain="[('model_id', '=', res_model_id)]"
                                        attrs="{'invisible': [('res_model_id', '=', False)]}"
                                        context="{'default_model_id': res_model_id}"/>
                                    <label for="delay_count"/>
                                    <div>
                                        <div class="o_row">
                                            <field name="delay_count" string="Schedule Date / निर्धारित तिथि"/>
                                            <field name="delay_unit"/>
                                        </div>
                                        <field name="delay_from"/>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <field name="default_description" string="Default Description / डिफ़ॉल्ट विवरण"/>
                            </group>
                            <p class="alert alert-info" role="alert" attrs="{'invisible': [('res_model_change', '=', False)]}">Modifying the model can have an impact on existing activities using this activity type, be careful.</p>
                        </sheet>
                    </form>
                <!-- </xpath> -->
            </field>
        </record>

        <record model="ir.ui.menu" id="hr_recruitment.hr_recruitment_menu_config_activity_type">
            <field name="name">Activity Type / क्रिया के प्रकार</field>
        </record>


        <record model="ir.actions.act_window" id="hr_recruitment.mail_activity_type_action_config_hr_applicant">
            <field name="name">Activity Type / क्रिया के प्रकार</field>
        </record>



        <record model="ir.ui.menu" id="hr_recruitment.action_hr_recruitment_configuration">
            <field name="name">Settings / समायोजन</field>
        </record>


        <record model="ir.actions.act_window" id="hr_recruitment.menu_hr_recruitment_global_settings">
            <field name="name">Settings / समायोजन</field>
        </record>

