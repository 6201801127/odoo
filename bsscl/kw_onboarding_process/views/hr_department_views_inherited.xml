<odoo>
    <!--Hr Department Inherit Kanban view-->
     <record id="hr_department_view_kanban" model="ir.ui.view">
        <field name="name">hr.department.kanban.inherit</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.hr_department_view_kanban"/>
        <field name="groups_id" eval="[(4,ref('hr_recruitment.group_hr_recruitment_user'))]"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//templates" position="before">
                    <field name="new_applicant_count"/>
                    <field name="new_hired_employee"/>
                    <field name="expected_employee"/>
                </xpath>

                <xpath expr="//div[hasclass('o_kanban_primary_right')]" position="inside">
                    <div t-if="record.new_applicant_count.raw_value > 0" class="row ml16">
                        <div class="col-9">
                            <a name="%(hr_recruitment.hr_applicant_action_from_department)d" type="action">
                                New Applicants
                            </a>
                        </div>
                        <div class="col-3 text-right">
                            <field name="new_applicant_count"/>
                        </div>
                    </div>
                </xpath>

                <xpath expr="//div[hasclass('o_kanban_manage_reports')]" position="inside">
                    <a role="menuitem" class="dropdown-item" name="%(hr_recruitment.action_hr_recruitment_report_filtered_department)d" type="action">
                        Recruitments
                    </a>
                </xpath>
            </data>
        </field>
    </record>
    <!-- Stage Tree View -->
    <record model="ir.ui.view" id="hr_recruitment_stage_tree_inherited">
        <field name="name">hr.recruitment.stage.tree</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_tree"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='replace'>
                <tree string="Stages / चरणों">
                    <field name="sequence" widget="handle" string="Sequence / अनुक्रम"/>
                    <field name="name" string=" Stage Name / चरणों का नाम" />
                    <field name="fold" string="Folded in Kanban / कंबन में मुड़ा हुआ"/>
                </tree>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_recruitment_stage_form_inherit">
        <field name="name">hr.recruitment.stage.form</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr='//form' position='replace'>
                <form string="Stages / चरणों">
                    <sheet>
                        <group name="stage_definition" string="Stage Definition / चरण परिभाषा">
                            <group>
                                <field name="name" string="Stage Name / चरणों का नाम" />
                                <field name="sequence" groups="base.group_no_one" string="Sequence / अनुक्रम"/>
                                <field name="template_id"  string="Email Template / ईमेल टेम्पलेट" domain= "[('model_id.model', '=', 'hr.applicant')]"/>
                            </group>
                            <group name="stage_details">
                                <field name="fold" string="Folded in Kanban / कंबन में मुड़ा हुआ"/>
                                <field name="job_ids" widget="many2many_tags" string='Job Specific / कार्य विशिष्ट'/>
                            </group>
                        </group>
                        <group name="tooltips" string="Tooltips / टूलटिप्स">
                            <p class="text-muted" colspan="2">
                                You can define here the labels that will be displayed for the kanban state instead
                                of the default labels.
                                / आप यहां उन लेबल को परिभाषित कर सकते हैं जो डिफ़ॉल्ट लेबल के बजाय कानबन स्थिति के लिए प्रदर्शित होंगे
                            </p>
                            <label for="legend_normal" string=" " class="o_status"/>
                            <field name="legend_normal" nolabel="1"/>
                            <label for="legend_blocked" string=" " class="o_status o_status_red"/>
                            <field name="legend_blocked" nolabel="1"/>
                            <label for="legend_done" string=" " class="o_status o_status_green"/>
                            <field name="legend_done" nolabel="1"/>
                        </group>
                        <separator string="Requirements /भर्तियाँ"/>
                        <field name="requirements" string="Requiremnets / आवश्यकताएं"/>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>

    <record id="hr_recruitment.hr_recruitment_stage_act" model="ir.actions.act_window">
        <field name="name">Stages / चरणों</field>
        <field name="res_model">hr.recruitment.stage</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="hr_recruitment_stage_tree_inherited"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new stage in the recruitment process
          </p><p>
            Don't forget to specify the department if your recruitment process
            is different according to the job position.
          </p>
        </field>
    </record>

    <record model="ir.ui.menu" id="hr_recruitment.menu_hr_recruitment_stage">
        <field name="name">Stages / चरणों</field>
    </record>
    <!-- Tag Form View -->
    <record id="hr_applicant_category_view_form_inherited" model="ir.ui.view">
        <field name="name">hr.applicant.category.form</field>
        <field name="model">hr.applicant.category</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_category_view_form"/>
        <field name="arch" type="xml">
             <xpath expr='//form' position='replace'>
                <form string="Tags / टैग">
                    <sheet>
                        <group>
                            <field name="name" string="Tag Name / टैग नाम"/>
                            <field name="color" string='Color Index / रंग सूची'/>
                        </group>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>

    <record id="hr_applicant_category_view_tree_inherited" model="ir.ui.view">
        <field name="name">hr.applicant.category.tree</field>
        <field name="model">hr.applicant.category</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_category_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='replace'>
                <tree string="Tags / टैग" editable="bottom">
                    <field name="name" string="Tag Name / टैग नाम"/>
                    <field name="color" string='Color Index / रंग सूची' groups="base.group_no_one"/>
                </tree>
            </xpath>
        </field>
    </record>



     <!-- Degree Tree View -->
