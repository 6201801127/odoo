<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="config_mail_template" model="mail.template">
            <field name="name">Config e-mail template</field>
            <field name="email_from">${ctx['email_to']}</field>
            <field name="subject">${ctx['dept_name']} Environment Mapping : ${object.name} | Onboarding</field>
            <field name="email_to">${ctx['user_mail']}</field>
            <field name="model_id" ref="kw_onboarding_process.model_kwonboard_enrollment"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
              <![CDATA[
                <table border="0" cellspacing="0" cellpadding="0" width="100%" >
                <tr>
                    <td>

                        <div style="margin-left: 1.2rem;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 18px;color:#676767;"><small style="color:rgb(22, 123, 158);font-size: 18px;margin-right: 2px;font-weight: 600;">Dear </small> <strong>${ctx['user_name']}</strong>,</h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">An ${ctx['dept_name']} environmental mapping activity for <strong>${object.name}</strong> has been assigned to you, please log in to Kwantify and complete the activity.</p><br/>

                            <a href="/web#id=${ctx['rec_id']}&action=${ctx['view_id']}&amp;model=kwonboard_enrollment&amp;view_type=form" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;" target="new">
                                Click Here
                            </a>
                            <br/>

                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">User Profile Details</p>
                            <table class="table table-bordered table-striped" border="0" cellspacing="0" cellpadding="0" width="100%" >
                                <tbody style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">

                                    % if object.name:
                                      <tr>
                                          <td><strong>Name</strong></td>
                                          <td>
                                                ${object.name}
                                          </td>
                                      </tr>
                                    % endif

                                    % if object.mobile:
                                      <tr>
                                          <td><strong>Mobile</strong></td>
                                          <td>
                                                ${object.mobile}
                                          </td>
                                      </tr>
                                    % endif

                                    % if ctx['dept_name'] == 'Finance'
                                      % if object.mrf_id:
                                        <tr>
                                          <td><strong>MRF</strong></td>
                                          <td>
                                            ${object.mrf_id.code}
                                          </td>
                                        </tr>
                                      % endif
                                    % endif

                                    % if object.location_id:
                                      <tr>
                                          <td><strong>Location</strong></td>
                                          <td>
                                                ${object.location_id.alias}
                                          </td>
                                      </tr>
                                    % endif

                                    % if object.dept_name:
                                      <tr>
                                          <td><strong>Department</strong></td>
                                          <td>
                                                ${object.dept_name.name}
                                          </td>
                                      </tr>
                                    % endif

                                      <tr>
                                          <td><strong>Division</strong></td>
                                          % if object.division:
                                            <td>
                                              ${object.division.name}
                                            </td>
                                          % else:
                                            <td>NA</td>
                                          % endif
                                      </tr>

                                      <tr>
                                          <td><strong>Section</strong></td>
                                          % if object.section:
                                            <td>
                                              ${object.section.name}
                                            </td>
                                          % else:
                                            <td>NA</td>
                                          % endif
                                      </tr>

                                      <tr>
                                          <td><strong>Practice</strong></td>
                                          % if object.practise:
                                            <td>
                                              ${object.practise.name}
                                            </td>
                                          % else:
                                            <td>NA</td>
                                          % endif
                                      </tr>

                                      <tr>
                                          <td><strong>Designation</strong></td>
                                          % if object.job_id:
                                            <td>
                                              ${object.job_id.name}
                                            </td>
                                          % else:
                                            <td>NA</td>
                                          % endif
                                      </tr>

                                      <tr>
                                          <td><strong>Joining Date</strong></td>
                                          % if object.tmp_join_date:
                                            <td>
                                              ${object.tmp_join_date.strftime('%d-%b-%Y')}
                                            </td>
                                          % else:
                                            <td>NA</td>
                                          % endif
                                      </tr>

                                    </tbody>
                                </table>
                            <br/><br/>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 17px;">
                            Thanks & regards <br/>
                            <p style="color: #676767;font-size: 14px;">This is a system generated mail. Please Do not reply to this mail.</p></p>
                        </div>
                    
                    </td>
                </tr>
                
            </table> 
                ]]>   
               
            </field>

        </record>
    </data>
</odoo>