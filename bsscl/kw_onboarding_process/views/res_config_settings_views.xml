<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.onboarding</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="On-Boarding" string="On-Boarding" data-key="kw_onboarding"
                     groups="kw_onboarding.group_kw_onboarding_manager">
                    <h2>Communication Settings</h2>
                    <div class="row mt16 o_settings_container">

                        <div class="col-12 col-lg-6 o_setting_box" title="Send Email / SMS from On-boarding form">
                            <div class="o_setting_left_pane">
                                <field name="module_onboarding_mail_status"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_onboarding_mail_status"/>
                                <div class="text-muted">
                                    Send Email
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" title="Send Email/ SMS from On-boarding form">
                            <div class="o_setting_left_pane">
                                <field name="module_onboarding_sms_status"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_onboarding_sms_status"/>
                                <div class="text-muted">
                                    Send SMS
                                </div>
                            </div>
                        </div>

                    </div>


                    <h2>Mode Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set default mode">
                            <div class="o_setting_left_pane">
                                <field name="module_onboarding_mode_status"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_onboarding_mode_status"/>
                                <div class="text-muted">
                                    Demo Mode
                                </div>
                            </div>
                        </div>
                    </div>


                    <h2>Responsible Person Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set responsible person">
                            <div class="o_setting_right_pane">
                                <label for="responsible_person_id"/>
                                <div class="text-muted">
                                    This person's email address to be used for onboarding communication, for candidates coming from rcruitment
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="responsible_person_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </div>
                        </div>
                    </div>


                    <h2>Configuration Inform Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set configuration inform">
                            <div class="o_setting_right_pane">
                                <label for="employee_creation_inform_ids"/>
                                <div class="text-muted">
                                    Inform while keeping in cc when configuration is submitted by Admin/IT/Finance
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="employee_creation_inform_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </div>
                        </div>
                    </div>
                    
                    <h2>Onboarding CC Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set Onboarding CC">
                            <div class="o_setting_right_pane">
                                <label for="onboarding_cc_ids"/>
                                <div class="text-muted">
                                    This person's email address to be used for onboarding communication, for candidates coming from recruitment
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="onboarding_cc_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </div>
                        </div>
                    </div>

                    <h2>Checklist Inform Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Set checklist inform">
                            <div class="o_setting_right_pane">
                                <label for="checklist_inform_ids"/>
                                <div class="text-muted">
                                    Inform while keeping in cc when checklist scheduler runs
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="checklist_inform_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

    <record id="kw_onboarding_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kw_onboarding'}</field>
    </record>

    <!-- <menuitem id="kwonboard_envconfig_menu" name="Settings" parent="kwonboard_config_menu" sequence="1" action="kw_onboarding_config_settings_action" /> -->

</odoo>
