<odoo>
    <data>

        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_takeaction_account_tree">
            <field name="name">kw_adv_apply_petty_cash_takeaction_account.tree</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <tree string="Apply Petty Cash Account Take Action" edit='false' delete='false' create='false' default_order='create_date desc'>
                    <field name="name" readonly='1' groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="user_emp_id" string='Employee' readonly='1' groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="department_id" readonly='1' groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="job_id" readonly='1' groups="kw_advance_claim.group_kw_advance_claim_account"/>
<!--                    <field name="petty_cash_type" readonly='1'/>-->
                     <field name="currency_id" readonly='1' groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="advance_amt" string="Amount" widget="monetary" groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="payment_date" widget="date" groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="approved_by" string="Approved By" groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="pending_status" groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <field name="state" readonly='1' groups="kw_advance_claim.group_kw_advance_claim_account"/>
                    <button name="petty_cash_take_action_button" string="Take Action" type="object" help="message" class="oe_highlight" attrs="{'invisible': [('state','in',['release','reject','cancel'])]}" groups="kw_advance_claim.group_kw_advance_claim_account"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_adv_apply_petty_cash_takeaction_account_form">
            <field name="name">kw_adv_apply_petty_cash_takeaction.form</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <form delete='false' create='false' duplicate='0' >
                    <script>
                        $(document).ready(function(){ state=  $("[aria-pressed=true]").text().trim();
                           console.log(state);
                            const array = ['Rejected', 'Release']
                            if ((state in array)){
                                $('.o_form_button_edit').hide();
                            }
                        });
                    </script>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,forward,approve,forward_acc,hold,grant,reject,release"/>

                        <button name="%(kw_advance_claim.action_kw_adv_petty_cash_grant_remark_wizard_form_view)d" string="Grant" type="action" attrs="{'invisible':[('state', 'in', ['reject','grant','draft','applied','forward','release'])]}"></button>
                        <button name="%(kw_advance_claim.action_kw_adv_petty_cash_release_remark_wizard_form_view)d" string="Release" type="action" attrs="{'invisible':[('state', '!=', 'grant')]}"></button>
                        <button name="%(kw_advance_claim.action_kw_adv_petty_cash_accounts_reject_remark_wizard_form_view)d" string="Reject" type="action" attrs="{'invisible':[('state', 'in', ['reject','grant','draft','applied','forward','release'])]}"></button>


                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="hide_btn_cancel" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="show_apply_btn" invisible='1'/>
                                <field name="hide_claim_settlement_button" invisible='1'/>
                                <field name="show_accounts_button" invisible='1'/>
                                <field name="name" invisible='1'/>
                                <field name="user_emp_id" string='Employee Name' options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="department_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
<!--                                <field name="division"  force_save="1" attrs="{'invisible': [('division','=', False)]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="section"  force_save="1" attrs="{'invisible': [('section','=', False)]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="practise"  force_save="1" attrs="{'invisible': [('practise','=', False)]}" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
                                <field name="job_id" readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="petty_cash_type" widget="radio" options="{'horizontal': true}" readonly='1' invisible="1"/>
                            </group>

                            <group>
                                <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="advance_amt" string="Amount" widget="monetary" attrs="{'readonly': [('state','in', ['grant','release','cancel','reject'])]}"/>
                                <field name="create_date" widget="date" readonly='1' string="Applied Date"/>
                                <field name="req_date" widget="date" readonly='1'/>
                                <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('state','in', ['grant','release','cancel','reject'])]}"/>
                                <field name="claim_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs="{'readonly': [('state','in', ['grant','release','cancel','reject'])]}"/>
                                <field name="description" readonly='1'/>
                                <field name="payment_date" attrs="{'invisible': [('payment_date','=', False)]}" readonly="1"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_adv_apply_petty_cash_account_takeaction">
            <field name="name">Take Action</field>
            <field name="res_model">kw_advance_apply_petty_cash</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state','in',['approve','grant','hold','forward_acc'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_adv_apply_petty_cash_takeaction_account_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					No records to show...
                </p>
            </field>
        </record>


    </data>
</odoo>