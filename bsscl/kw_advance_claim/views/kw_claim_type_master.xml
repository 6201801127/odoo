<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_claim_type_tree">
            <field name="name">kw_claim_type.tree</field>
            <field name="model">kw_advance_claim_type</field>
            <field name="arch" type="xml">
                <tree string="Claim Type" editable="bottom" import='false'>
                    <field name="sequence" widget='handle'/>
                    <field name="claim_type"/>
                    <field name="claim_category_id" options="{'no_open': True,'no_create':True,'no_edit':True}" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                    <field name="active" widget="boolean_toggle" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_claim_type_form">
            <field name="name">kw_claim_type.form</field>
            <field name="model">kw_advance_claim_type</field>
            <field name="arch" type="xml">
                <form string="Claim Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="claim_category_id" groups="kw_advance_claim.group_kw_advance_claim_admin" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="claim_type" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="description" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                            <group>
                                <field name="sequence" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="active" widget="boolean_toggle" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                        </group>
                    </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_claim_type_action">
            <field name="name">Claim Type</field>
            <field name="res_model">kw_advance_claim_type</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>