<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_adv_ret_config_tree">
            <field name="name">kw_adv_ret_config.tree</field>
            <field name="model">kw_advance_ret_config</field>
            <field name="arch" type="xml">
                <tree string="Advance Petty Cash Exception">
<!--                    <field name="location_id"/>-->
<!--                    <field name="dept_id"/>-->
                    <field name="employee_ids" widget="many2many_tags"/>
                    <field name="documents" filename="file_name" widget="FieldBinary"/>
                    <field name="file_name" invisible="1"/>
                    <field name="remark"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_adv_ret_config_form">
            <field name="name">kw_adv_ret_config.form</field>
            <field name="model">kw_advance_ret_config</field>
            <field name="arch" type="xml">
                <form string="Advance Petty Cash Exception">
                    <sheet>
                        <group>
                            <group>
<!--                                <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}"-->
<!--                                       domain="[('dept_type.code', '=', 'department')]"/>-->
<!--                                <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}"-->
<!--                                       attrs= "{'invisible': [('dept_id', '=', False)]}"/>-->
<!--                                <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}"-->
<!--                                       attrs= "{'invisible': [('division', '=', False)]}"/>-->
<!--                                <field name="practise" options="{'no_open': True,'no_create':True,'no_edit':True}"-->
<!--                                       attrs= "{'invisible': [('section', '=', False)]}"/>-->
                                <field name="employee_ids" widget="many2many_tags"
                                       options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="eligibility_amt"/>
                                <field name="interest"/>
                                <field name="documents" filename="file_name" widget="FieldBinary"/>
                                <field name="file_name" invisible="1"/>
                                <field name="remark"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_adv_ret_config_action">
            <field name="name">RET Configuration</field>
            <field name="res_model">kw_advance_ret_config</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>