<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_adv_buffer_period_master_tree">
            <field name="name">kw_adv_buffer_period_master.tree</field>
            <field name="model">kw_advance_buffer_period_master</field>
            <field name="arch" type="xml">
                <tree editable='bottom' import='false'>
                    <field name="name" force_save="1"/>
                    <field name="buffer_period"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_adv_buffer_period_master_form">
            <field name="name">kw_adv_buffer_period_master.form</field>
            <field name="model">kw_advance_buffer_period_master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="buffer_period"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_adv_buffer_period_master_action">
            <field name="name">Relaxation Period</field>
            <field name="res_model">kw_advance_buffer_period_master</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_adv_buffer_period_master_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_adv_buffer_period_master_form')})]"/>
        </record>

    </data>
</odoo>