<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_advance_purpose_tree">
            <field name="name">kw_advance_purpose.tree</field>
            <field name="model">kw_advance_purpose</field>
            <field name="arch" type="xml">
                <tree string="Advance Purpose" editable="bottom" import='false'>
                    <field name="sequence" widget='handle'/>
                    <field name="purpose"/>
                    <field name="kw_id" groups="base.group_no_one"/>
                    <field name="active" widget="boolean_toggle" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_advance_purpose_form">
            <field name="name">kw_advance_purpose.form</field>
            <field name="model">kw_advance_purpose</field>
            <field name="arch" type="xml">
                <form string="Advance Purpose">
                    <sheet>
                        <group>
                            <group>
                                <field name="purpose" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="description" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                            <group>
                                <field name="sequence" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="active" widget="boolean_toggle" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="kw_id" groups="base.group_no_one"/>
                            </group>
                        </group>
                    </sheet>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                        <field name="activity_ids" widget="mail_activity"/>-->
<!--                        <field name="message_ids" widget="mail_thread"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_advance_purpose_action">
            <field name="name">Advance Purpose</field>
            <field name="res_model">kw_advance_purpose</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>