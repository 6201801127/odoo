<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_claim_category_tree">
            <field name="name">kw_claim_category.tree</field>
            <field name="model">kw_advance_claim_category</field>
            <field name="arch" type="xml">
                <tree string="Claim Category" editable="bottom" import='false'>
                    <field name="sequence" widget='handle'/>
                    <field name="name"/>
                    <field name="category" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                    <field name="active" widget="boolean_toggle" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_claim_category_form">
            <field name="name">kw_claim_category.form</field>
            <field name="model">kw_advance_claim_category</field>
            <field name="arch" type="xml">
                <form string="Claim Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="category" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="description" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                            <group>
                                <field name="sequence" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="active" widget="boolean_toggle" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                        </group>
                    </sheet>
                    <!-- <div class="oe_chatter" groups="kw_advance_claim.group_kw_advance_claim_admin">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_claim_category_action">
            <field name="name">Claim Category</field>
            <field name="res_model">kw_advance_claim_category</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>