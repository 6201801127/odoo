<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kw_allow_for_another_loan_tree">
            <field name="name">kw_allow_for_another_loan.tree</field>
            <field name="model">kw_advance_allow_for_another_loan</field>
            <field name="arch" type="xml">
                <tree string="Allow for another loan">
<!--                    <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                    <field name="dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
                    <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="advance_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                    <field name="loan_elig_amnt"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_allow_for_another_loan_form">
            <field name="name">kw_allow_for_another_loan.form</field>
            <field name="model">kw_advance_allow_for_another_loan</field>
            <field name="arch" type="xml">
                <form string="Allow for another loan">
                    <sheet>
                        <group>
                            <group>
                                <!-- <field name="allow_another_loan_seq_no"/> -->
<!--                                <field name="location_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="dept_id" options="{'no_open': True,'no_create':True,'no_edit':True}" domain="[('dept_type.code', '=', 'department')]"/>-->
<!--                                <field name="division" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('dept_id', '=', False)]}"/>-->
<!--                                <field name="section" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('division', '=', False)]}"/>-->
<!--                                <field name="practise" options="{'no_open': True,'no_create':True,'no_edit':True}" attrs= "{'invisible': [('section', '=', False)]}"/>-->
                                <field name="employee_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="advance_type_id" widget="radio" options="{'no_open': True,'no_create':True,'no_edit':True,'horizontal': true}" />
                                <field name="loan_elig_amnt"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_allow_for_another_loan_action">
            <field name="name">Allow For Another Loan</field>
            <field name="res_model">kw_advance_allow_for_another_loan</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>