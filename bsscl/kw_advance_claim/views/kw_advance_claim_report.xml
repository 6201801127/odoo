            <field name="arch" type="xml">
                <search string="EMI">
                    <field name="deduction_id"/>
                    <field name="employee_id"/>
                    <field name="deduction_date"/>
                    <field name="principal_amt"/>
                    <field name="monthly_interest"/>
                    <field name="amount"/>
                    <field name="balance"/>
                    <field name="tax_amount"/>
                    <field name="pay_slip"/>
                    <field name="payment_by"/>
                    <field name="status"/>

