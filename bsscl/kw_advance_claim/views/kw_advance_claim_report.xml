		(0, 0, {'view_mode': 'tree', 'view_id': ref('kw_apply_salary_advance_tree_report')}),
		(0, 0, {'view_mode': 'form', 'view_id': ref('kw_apply_salary_advance_report_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records to show...
                </p>
            </field>
        </record>
        <!-- petty cash report -->
        <record model="ir.ui.view" id="kw_apply_petty_cash_tree_report">
            <field name="name">kw_adv_apply_petty_cash.tree</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <tree string="Apply Petty cash Report Tree" default_order='settlement_status desc' create="false" import="false">
                    <field name="name"/>
                    <field name="user_emp_id" string='Employee'/>
                    <field name="department_id"/>
