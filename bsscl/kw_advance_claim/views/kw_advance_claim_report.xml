                                <field name="category_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="claim_type_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="description"/>
                                <field name="payment_date" attrs="{'invisible': [('payment_date','=', False)]}" readonly="1"/>
                                <field name="check_settlement_user" invisible='1'/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kw_apply_petty_cash_report_search_view" model="ir.ui.view">
            <field name="name">kw_adv_apply_petty_cash.search</field>
            <field name="model">kw_advance_apply_petty_cash</field>
            <field name="arch" type="xml">
                <search string="Fields">
                        <field name="name"/>
                        <field name="user_emp_id"/>
                        <field name ='department_id'/>
                        <field name="job_id"/>
                        <field name="currency_id"/>
                        <field name ='advance_amt'/>
                        <field name ='create_date'/>
                        <field name ='req_date'/>
                        <field name="payment_date"/>
                        <field name="state"/>
                        <field name="settlement_status"/>
                        <separator/>
					    <filter string="This Year" domain="[('payment_date', 'like',context_today().strftime('%Y'))]" 
