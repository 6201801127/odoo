                </search>
            </field>
        </record>       


        <!-- Claim Settlement report -->
        <record model="ir.ui.view" id="kw_claim_settlement_tree_report">
            <field name="name">kw_adv_claim_settlement.tree</field>
            <field name="model">kw_advance_claim_settlement</field>
            <field name="arch" type="xml">
                <tree string="Petty Cash Settlement Report" default_order='id desc' create="false" import="false">
                    <field name="name"/>
                    <field name="petty_cash_id"/>
                    <field name="empl_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="applied_date" widget="date"/>
                    <field name="payment_date"/>
                    <field name="pending_status"/>
                    <field name="petty_cash_type" invisible="1"/>
                    <field name="currency_id"/>
                    <field name="net_total" string="Claim Amt." widget="monetary"/>
                    <field name="state"/>
                    <field name="forwarded_by" invisible="1"/>
                </tree>
            </field>
