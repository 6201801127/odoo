<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- salary advance report-->
        <record model="ir.ui.view" id="kw_apply_salary_advance_tree_report">
            <field name="name">kw_apply_salary_advance.tree</field>
            <field name="model">kw_advance_apply_salary_advance</field>
            <field name="arch" type="xml">
                <tree string="Apply Salary Advance Report Tree" default_order='id desc' create="false" import="false">
                    <field name="name"/>
                    <field name="employee_id" string='Employee'/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="interest" invisible="1"/>
                    <field name="adv_purpose"/>
                    <field name="currency_id"/>
                    <field name="eligibility_amt" string="Eligible Amt." widget="monetary"/>
                    <field name="adv_amnt" sum="Total" string="Advance Amt." widget="monetary"/>
<!--                    <field name="total_install"/>-->
                    <field name="install_amnt" invisible="1"/>
                    <field name="create_date" string="Applied Date" widget="date"/>
                    <field name="req_date"/>
                    <field name="payment_date"/>
                    <field name="description" invisible="1"/>
                    <field name="forwarded_by" invisible="1"/>
                    <field name="state"/>
                    <!-- <field name="action_to_be_taken_by"/> -->
                </tree>
            </field>
        </record>

 <record model="ir.ui.view" id="kw_apply_salary_advance_report_form">
            <field name="name">kw_apply_salary_advance.report.form</field>
            <field name="model">kw_advance_apply_salary_advance</field>
            <field name="arch" type="xml">
                <form duplicate='0' delete='false' create='false' edit='false'>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,forward,approve,hold,grant,cancel,reject"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="hide_btn_cancel" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="show_apply_btn" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="current_user" invisible='1'/>
                                <!-- <field name="finace_take_action" invisible='1'/> -->
                                <field name="show_accounts_button" invisible='1'/>
                                <field name="name" invisible='1'/>
                                <field name="applicant" widget="radio" options="{'horizontal': true}" readonly="1" invisible='1'/>
                                <field name="employee_id"  force_save="1" attrs="{'required': [('applicant','=', 'other')],'readonly':[('applicant','=','self')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="department_id"  force_save="1" attrs="{'readonly':['|',('state','!=','applied'),('state','!=','applied')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
<!--                                <field name="division"  force_save="1" attrs="{'invisible': [('division','=', False)],'readonly':[('state','!=','applied')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="section"  force_save="1" attrs="{'invisible': [('section','=', False)],'readonly':[('state','!=','applied')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="practise"  force_save="1" attrs="{'invisible': [('practise','=', False)],'readonly':[('state','!=','applied')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
                                <field name="job_id"  force_save="1" attrs="{'readonly':[('state','!=','applied')]}" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
<!--                                <field name="emp_grade" readonly="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
<!--                                <field name="emp_band" readonly="1"  options="{'no_open': True,'no_create':True,'no_edit':True}"/>-->
                                <field name="adv_purpose" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="description"/>
                                <field name="req_date" widget="date"/>
                                <p style="color:#fc0307"><i>(Advance amount required date.)</i></p>
                                <field name="emi_start_date" invisible='1'/>
                            </group>
                            <group>
                                <field name="eligibility_amt" widget="monetary"/>
                                <field name="interest"/>
                                <field name="currency_id" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="adv_amnt" widget="monetary"/>
<!--                                <field name="total_install"/>-->
                                <field name="install_amnt" invisible="1"/>
                                <field name="payment_date" string="Disbursed Date" attrs="{'invisible': [('payment_date','=', False)]}" readonly="1"/>
                                <field name="buffer_period" invisible="1"/>
                                <field name="closer_type" invisible='1'/>
                                <field name="total_month_count" invisible='1'/>
                                
                            </group>
                        </group>
                        <notebook>
                            <page name="Deduction" string="Installments">
                                <field name="deduction_line_ids" readonly="1" force_save="1" style="pointer-events:none;">
                                    <tree editable="bottom">
                                        <field name="deduction_date" invisible="1"/>
                                        <field name="installment_month"/>
                                        <field name="principal_amt" widget="monetary"/>
                                        <field name="monthly_interest" widget="monetary"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="balance" widget="monetary"/>
                                        <field name="tax_amount" invisible="1"/>
                                        <field name="status" invisible="0"/>
                                        <field name="pay_slip" invisible="0"/>
                                        <field name="payment_by" invisible="0"/>
                                        <field name="employee_id" invisible="1"/>
                                    </tree>
                                </field>
                                <div width="100%" style="display: flex;flex-flow: row nowrap;justify-content: space-between;">
                                    <div width="45%">
                                        <label for="relaxation_line_ids" string="Relaxation Period" attrs="{'invisible': [('buffer_period','=', False)]}"/>
                                        <field name="relaxation_line_ids" readonly="1" force_save="1" style="pointer-events:none;" attrs="{'invisible': [('buffer_period','=', False)]}">
                                            <tree>
                                                <field name="relaxation_period"/>
                                                <field name="description"/>
                                                <field name="approved_on"/>
                                                <field name="approve_by"/>
                                            </tree>
                                        </field>
                                    </div>
                                    <div width="45%">
                                        <label for="p_deduction_line_ids" string=" Pre closure Payment" attrs="{'invisible': [('closer_type','=', False)]}"/>
                                        <field name="p_deduction_line_ids" readonly="1" force_save="1" style="pointer-events:none;" attrs="{'invisible': [('closer_type','=', False)]}">
                                            <tree>
                                                <field name="paid_date"/>
                                                <field name="closer_type"/>
                                                <field name="month_count" string="No. of Installment(s)"/>
                                                <field name="amount" widget="monetary"/>
                                                <field name="payment_by" invisible="1"/>
                                                <field name="employee_id" invisible="1"/>
                                            </tree>
                                        </field>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>

        <record id="kw_apply_salary_advance_report_search_view" model="ir.ui.view">
            <field name="name">kw_apply_salary_advance.report.search</field>
            <field name="model">kw_advance_apply_salary_advance</field>
            <field name="arch" type="xml">
                <search string="Fields">
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name ='department_id'/>
                        <field name="job_id"/>
                        <field name ='adv_purpose'/>
                        <field name="currency_id"/>
                        <field name="eligibility_amt"/>
                        <field name ='adv_amnt'/>
<!--                        <field name ='total_install'/>-->
                        <field name ='create_date'/>
                        <field name ='req_date'/>
                        <field name="payment_date"/>
                        <field name="state"/>
                        <separator/>
					    <filter string="This Year" domain="[('payment_date', 'like',context_today().strftime('%Y'))]" 
                                name="current_year_required_date"/>
                        <separator/>
                        <filter string="Applied Date" name="create_date" date="create_date" />
                        <filter string="Required Date" name="req_date" date="req_date"/>
                        <filter string="Disbursed Date" name="payment_date" date="payment_date" />
                        <separator/>
                        <filter string="Draft" name="state" domain="[('state', '=','draft')]"/>
                        <filter string="Applied" name="state" domain="[('state', '=','applied')]"/>
                        <filter string="Approved" name="state" domain="[('state', '=','approve')]"/>
                        <filter string="Hold" name="state" domain="[('state', '=','hold')]"/>
                        <filter string="Grant" name="state" domain="[('state', '=','grant')]"/>
                        <filter string="Cancel" name="state" domain="[('state', '=','cancel')]"/>
                        <filter string="Reject" name="state" domain="[('state', '=','reject')]"/>
                        <filter string="Release" name="state" domain="[('state', '=','release')]"/>
                        <filter string="Paid" name="state" domain="[('state', '=','paid')]"/>
                    <group expand="1" string="Group By">
                        <filter string="State" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Designation" name="job_id" domain="[]" context="{'group_by':'job_id'}"/>
                        <filter string="Department" name="department_id" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Advance Purpose" name="adv_purpose" domain="[]" context="{'group_by':'adv_purpose'}"/>
                    </group> 
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_apply_salary_advance_report_action">
            <field name="name">Salary Advance Report</field>
            <field name="res_model">kw_advance_apply_salary_advance</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'user_loaded_view':True}</field>
