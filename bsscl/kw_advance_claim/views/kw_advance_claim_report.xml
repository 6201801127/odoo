                <form delete='false' create='false' edit='0' duplicate='0'>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,forward,approve,forward_acc,hold,grant,reject"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="kw_advance_claim.group_kw_advance_claim_user">
                            <button class="oe_stat_button " type="object" name="get_claim_record" icon="fa-inr fa-lg" style="float:right;height=60px;" attrs="{'invisible': ['|','|',('state','!=', 'release'),('check_settlement_user','=',False),('hide_btm_claim','=', True)]}" string="Claim Settlement">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="hide_btn_cancel" invisible='1'/>
                                <field name="show_ra_button" invisible='1'/>
                                <field name="show_accounts_button" invisible='1'/>
                                <field name="show_apply_btn" invisible='1'/>
                                <field name="hide_btm_claim" invisible='1'/>
                                <field name="name" invisible='1'/>
                                <field name="user_emp_id" string='Employee Name' readonly='1' options="{'no_open': True,'no_create':True,'no_edit':True}"/>
                                <field name="department_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
<!--                                <field name="division"  force_save="1" attrs="{'invisible': [('division','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>-->
<!--                                <field name="section"  force_save="1" attrs="{'invisible': [('section','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>-->
<!--                                <field name="practise"  force_save="1" attrs="{'invisible': [('practise','=', False)]}" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>-->
                                <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True}" readonly='1'/>
                                <field name="petty_cash_type" widget="radio" options="{'horizontal': true}" invisible="1"/>
                                <field name="action_by" invisible='1'/>
                                <field name="mail_sent" invisible="1"/>
