<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kw_advance_type_tree">
            <field name="name">kw_advance_type.tree</field>
            <field name="model">kw_advance_type</field>
            <field name="arch" type="xml">
                <tree editable='bottom' import='false'>
                    <field name="name"/>
                    <field name="alias" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="kw_advance_type_form">
            <field name="name">kw_advance_type.form</field>
            <field name="model">kw_advance_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                                <field name="alias" groups="kw_advance_claim.group_kw_advance_claim_admin"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="kw_advance_type_action">
            <field name="name">Advance Type</field>
            <field name="res_model">kw_advance_type</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kw_advance_type_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kw_advance_type_form')})]"/>
        </record>

    </data>
</odoo>