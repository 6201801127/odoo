<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_adv_apply_petty_cash_forward_wizard_form" model="ir.ui.view">
            <field name="name">Petty Cash Forward Apply Form</field>
            <field name="model">kw_advance_apply_petty_cash_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>
                        <group>
                            <field name="petty_cash_record_id" invisible="1"/>
                            <field name="forwardto_id" string="Select Employee" options="{'no_open': True,'no_create':True,'no_edit':True}" style="overflow-y: hidden;width: 700px;"/>
                            <field name="remark" style="overflow-y: hidden;height: 30px;resize: none;width: 700px;" string="Remark"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="petty_cash_fwd_take_action_btn" type="object" class="btn btn-success">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_kw_adv_apply_petty_cash_forward_wizard_form">
            <field name="name">Forward petty Action</field>
            <field name="res_model">kw_advance_apply_petty_cash_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_petty_cash_id': active_id}</field>

        </record>

    </data>
</odoo>