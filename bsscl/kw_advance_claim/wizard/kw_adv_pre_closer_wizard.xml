<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_adv_pre_closer_wizard_wizard_form" model="ir.ui.view">
            <field name="name">Pre Closer Form</field>
            <field name="model">kw_advance_pre_closer_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <script>
                    $(document).ready(function(){
                        $(".modal-title").show();
                    });
                    </script>
                        <group>
                            <group>
                                <field name="salary_adv_id" invisible="1" options="{'no_open': True,'no_create':True,'no_edit':True}"/>
<!--                                <field name="total_installment"/>-->
                                <field name="left_installment" style="height: 30px;resize: none;"/>
                                <field name="paid_installment" style="height: 30px;resize: none;"/>
                            </group>
                            <group>
                                <field name="total_amount"/>
                                <field name="left_amount" style="height: 30px;resize: none;"/>
                                <field name="paid_amount" style="height: 30px;resize: none;"/>
                            </group>
                            <group>
                                <field name="closer_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="no_of_month" placeholder="1,2,3,4,5,6....." attrs="{'invisible': [('closer_type','=', False)],'required':[('closer_type','in', ['partial'])],'readonly':[('closer_type','in', ['full'])]}"/>
                                <field name="partial_amount" attrs="{'invisible': [('closer_type','=', False)],'readonly':[('closer_type','in', ['partial','full'])]}"/>
                                <field name="payment_ref"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="pre_closer_btn"  context="{'pre_closure':True}" type="object" class="btn btn-success btn-lg">Submit</button>
                        <button string="Cancel" special="cancel" class="btn btn-danger btn-lg"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="kw_adv_pre_closer_wizard_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Pre Closer Process</field>
            <field name="res_model">kw_advance_pre_closer_wizard</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="src_model">kw_advance_apply_salary_advance</field>-->
            <field name="view_id" ref="kw_adv_pre_closer_wizard_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>