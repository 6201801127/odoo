<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <record id="bsscl_griev_reject_wizard_view" model="ir.ui.view">
        <field name="name">Reject Grievance</field>
        <field name="model">reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="rejection_reason" required="1" />
                    </group>
                </group>
                <footer>
                    <button name="reject_application" string="Reset Application" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="reject_grievance_action" model="ir.actions.act_window">
        <field name="name">Reset Grievance</field>
        <field name="res_model">reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bsscl_grievance.bsscl_griev_reject_wizard_view"/>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records to show...
            </p>
        </field>
    </record>



    <record id="bsscl_griev_reject_action_view" model="ir.ui.view">
        <field name="name">Reject Grievance</field>
        <field name="model">reject.wizard.action</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="reject_reason_griev" required="1" />
                    </group>
                </group>
                <footer>
                    <button name="reject_reason" string="Reject Application" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="reject_grievance_id" model="ir.actions.act_window">
        <field name="name">Reject Grievance</field>
        <field name="res_model">reject.wizard.action</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bsscl_grievance.bsscl_griev_reject_action_view"/>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records to show...
            </p>
        </field>
    </record>

    </data>
</odoo>