<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_reimbursement_type_tree" model="ir.ui.view">
            <field name="name">view.reimbursement_type.tree</field>
            <field name="model">reimbursement.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record id="view_reimbursement_type_form" model="ir.ui.view">
            <field name="name">view.reimbursement_type.form</field>
            <field name="model">reimbursement.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group/>
                        </group>
                        <group>
                            <group>
                                <p class="text-danger">
                                The "Code" field is for developer reference only.
                                Changing value of this could affect the module functionality.
                                </p>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_reimbursement_type_act_window" model="ir.actions.act_window">
            <field name="name">Reimbursement Type</field>
            <field name="res_model">reimbursement.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="reimbursement_type_menu" name="Reimbursement Type" parent="reimbursement_configuration_menu_id" action="action_reimbursement_type_act_window" sequence="1" />
    </data>
</odoo>