    <report id="reimbursement_model_report_reportview"
            model="reimbursement.model.report"
            string="Reimbursement Report"
            report_type="qweb-pdf"
            name="reimbursement_bsscl.reimbusement_rep_templtate_id"
            file="reimbursement_bsscl.reimbusement_rep_templtate_id"
            />

    <report
            id="boi_payroll_advice"
            model="reimbursement.payment.advice" 
            string="Print Advice (BOI)"
            report_type="qweb-pdf"
            name="reimbursement_bsscl.report_boi_payroll_advice" 
            file="reimbursement_bsscl.report_boi_payroll_advice"
            print_report_name="'Reimbursement Payment Advice %s - %s' % (object.date.strftime('%B'), object.date.strftime('%Y'))"/>

    <report
            id="non_boi_payroll_advice"
            model="reimbursement.payment.advice" 
            string="Print Advice (Non-BOI)"
            report_type="qweb-pdf"
            name="reimbursement_bsscl.report_non_boi_payrolladvice" 
            file="reimbursement_bsscl.report_non_boi_payrolladvice"
            print_report_name="'Reimbursement Payment Advice %s - %s' % (object.date.strftime('%B'), object.date.strftime('%Y'))"/>

    <report id="reimbursement_indivisual_report"
            model="reimbursement"
            string="Print Report"
            report_type="qweb-pdf"
            name="reimbursement_bsscl.indivisual_reimbursement_report" 
            file="reimbursement_bsscl.indivisual_reimbursement_report"
            />

