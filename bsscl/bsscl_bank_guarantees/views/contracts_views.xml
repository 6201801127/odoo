<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record model="ir.ui.view" id="bsscl_contract_form_view">
            <field name="name">bsscl.contract.contract.form</field>
            <field name="model">bsscl.contract.contract</field>
            <field name="arch" type="xml">
                <form string="Contract" delete="false">

                    <sheet>
                        <header>
                            <button name="%(bsscl_bank_guarantees.action_update_bank_guarantee_details_wizard_form)d" string="Update Bank Guarantee" type="action"></button>
                        </header>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="contract_to" required="1"/>
                                <field name="description"/>
                            </group>
                            <group>
                               <field name="start_date" required="1"/>
                               <field name="end_date" required="1"/>
                               <field name="currency_id" invisible="1"/>
                               <field name="company_id" invisible='1'/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Bank Guarantees" string="Bank Guarantees">
                                <field name="bank_guarantee_line_ids" force_save="1" readonly="1">
                                    <tree readonly="1">
                                        <field name="id" invisible='1'/>
                                        <field name="name" required="1"/>
                                        <field name="bank_name" required="1"/>
                                        <field name="bsscl_contract_id" required="1" invisible="1"/>
                                        <field name="recieved_date" required="1"/>
                                        <field name="from_date" required="1"/>
                                        <field name="to_date" required="1"/>
                                        <field name="upload" filename="fname" required="1"/>
                                        <field name="fname" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>

                                </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>

    <record id="contract_tree_view" model='ir.ui.view'>
        <field name="name">bsscl.contract.contract.tree</field>
        <field name="model">bsscl.contract.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="contract_to"/>
                <field name="start_date"/>
                <field name="end_date"/>
              </tree>
        </field>
    </record>



    <record model="ir.actions.act_window" id="bank_contract_guarantee_action">
            <field name="name">Contract</field>
            <field name="res_model">bsscl.contract.contract</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">

              <p >
                No activity yet
              </p><p>
                You can create your Contract Bank guarantees details here!!!.
              </p>
            </field>
        </record>

</odoo>