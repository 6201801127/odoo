<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- ************* Guest house form view ****************** -->
        <record id="bsscl_guest_house_view_form_id" model="ir.ui.view">
            <field name="name">BSSCL: Guest house view form</field>
            <field name="model">bsscl.guest.house</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="country_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ************* Guest house tree view ****************** -->
        <record id="bsscl_guest_house_view_tree_id" model="ir.ui.view">
            <field name="name">BSSCL: Guest house view tree</field>
            <field name="model">bsscl.guest.house</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="country_id" options="{'no_create':True,'no_open':True,'no_create_edit': True}"/>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- ************* Guest house action  ****************** -->
        <record id="bsscl_guest_house_action_id" model="ir.actions.act_window">
            <field name="name">Guset House / अतिथि गृह</field>
            <field name="res_model">bsscl.guest.house</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    

</odoo>
