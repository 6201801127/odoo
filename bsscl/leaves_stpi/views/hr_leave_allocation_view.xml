    <record id="hr_holidays_form_inh_allocation" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit.allocation</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_refuse']" position="replace">
                <button string="Cancel" name="action_refuse" states="confirm,validate,validate1" type="object" groups="hr_holidays.group_hr_holidays_user" attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', 'not in', ('confirm','validate','validate1'))]}"/>
            </xpath>

            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//label[@for='number_of_days']" position="attributes">
                <attribute name= "string">Number of Leave</attribute>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='department_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='mode_company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='action_approve']" position="attributes">
                <attribute name= "string">Validate</attribute>
            </xpath>

            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="gende" string="Gender" invisible='1'/>
                <field name="employee_id" domain="[('gende','=',gende)]" groups="hr_holidays.group_hr_holidays_user" attrs="{'required': [('holiday_type', '=', 'employee')], 'invisible': [('holiday_type', '!=', 'employee')]}"/>
                <field name="by_branch_id" attrs="{'invisible':[('holiday_type','!=','branch')]}"/>
                <field name="category_id" attrs="{'required': [('holiday_type', '=', 'category')], 'invisible': [('holiday_type', '!=', 'category')]}"/>
                <field name="department_id" groups="hr_holidays.group_hr_holidays_user" attrs="{'required': [('holiday_type', '=', 'department')], 'invisible': [('holiday_type', 'not in', ('department', 'category'))]}"/>
                <field name="mode_company_id" groups="hr_holidays.group_hr_holidays_user" attrs="{'required': [('holiday_type', '=', 'company')], 'invisible': [('holiday_type', '!=', 'company')]}"/>
            </xpath>

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="before">
                <field name="name" string='Remarks' required='1'/>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='notes']" position="replace" />
            <xpath expr="//field[@name='state']" position="replace">
             <field name="state" widget="statusbar" statusbar_visible="confirm,validate"/>
            </xpath>
        </field>
    </record>

