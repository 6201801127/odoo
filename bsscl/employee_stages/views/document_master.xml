<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="emp_document_master_view_form">
        <field name="name">emp_document_master.view</field>
        <field name="model">emp_document_master</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" required="1"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="emp_document_master_tree_view">
        <field name="name">emp_document_master.view</field>
        <field name="model">emp_document_master</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" required="1"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_emp_document_master" model="ir.actions.act_window">
        <field name="name">File Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">emp_document_master</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">tree</field>
    </record>
    <menuitem id="emp_document_master_menu" name="File Master" parent="hr.menu_human_resources_configuration" sequence="9" action="action_emp_document_master"/>

</odoo>
