<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="create_appraisal_email_template_id" model="mail.template">
            <field name="name">Create Appraisal E-mail</field>
            <field name="email_from">kwantify@csm.tech</field>
            <field name="subject">Appraisal Start</field>
            <field name="email_to">${ctx['email_to']}</field>
            <!-- <field name="email_cc">${ctx['email_cc']}</field> -->
            <field name="model_id" ref="bsscl_employee_appraisal.model_bsscl_employee_appraisal"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type='html'>
                <table>
                    <thead>
                        <tr>
                            <td>
                                <p>
                                    Dear<strong> ${(ctx.get('names') or ''|safe)},</strong>
                                </p>
                                <p>
                                    The Appraisal has been created.Below are the details-
                                </p>
                                <p>Check your portal to stay updated on the status of the Appraisal.</p>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <br/><br/><p>This is a system generated mail. Please do not reply to this email.</p>

                            </td>
                        </tr>

                    </tbody>
                </table>
            </field>

        </record>
    
    </data>
    

</odoo>
