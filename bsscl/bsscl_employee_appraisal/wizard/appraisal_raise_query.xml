<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="appraisal_raisequery_view_form" model="ir.ui.view">
            <field name="name">Appraisal : Raise Query</field>
            <field name="model">appraisal.raisequery</field>
            <field name="arch" type="xml">
                <form string="Query View">
                    <sheet>
                        <group>
                            <field name="query_remarks"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="submit_query_action" string="Submit Query" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="appraisal_raisequery_action" model="ir.actions.act_window">
            <field name="name">Raise Query / प्रश्न उठाएँ</field>
            <field name="res_model">appraisal.raisequery</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="appraisal_raisequery_view_form"/>
        </record>
    
    </data>
    
    

</odoo>
