<odoo>
    <!--  Customize Attendance Report  -->
    <record id="inherited_view_attendance_tree_view" model="ir.ui.view">
        <field name="name">inherited_hr.attendance.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="check_out" position="after">
                <field name="late_check_in" invisible="1"/>
                <field name="check_in_status"/>
            </field>
        </field>
    </record>
    <record id="bsscl_view_attendance_tree_inherit" model="ir.ui.view">
        <field name="name">bsscl.hr.attendance.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="edit">0</attribute>
                <attribute name="create">0</attribute>
            </tree>
        </field>
    </record>
    <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="search_view_id" ref="hr_attendance.hr_attendance_view_filter" />
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No attendance records found
            </p><p>
                The attendance records of your employees will be displayed here.
            </p>
        </field>
    </record>

    <record id="hr_attendance_view_filter_inherited" model="ir.ui.view">
        <field name="name">hr_attendance_view_filter</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group[@expand='0']" position="after">
                <filter name="office_status"  string="Office IN/OUT Status" context="{'group_by':'check_in_status'}"/>
            </xpath>
        </field>
    </record>
    
</odoo>