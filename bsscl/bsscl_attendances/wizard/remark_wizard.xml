<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- approve wizard -->
        <record id="approve_change_wizard_id" model="ir.ui.view">
            <field name="name">Remarks</field>
            <field name="model">approve_wizard</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="remark" required='1'/>
                                <span class=""><i>** maximum 50 character's.</i></span>

                            </group>                            
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm_reason" string="Confirm / पुष्टि करना" type="object" class="btn-primary"/>
                        <button string="Cancel / रद्द करना"  class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="approve_change_request" model="ir.actions.act_window">
            <field name="name">Remarks</field>
            <field name="res_model">approve_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

