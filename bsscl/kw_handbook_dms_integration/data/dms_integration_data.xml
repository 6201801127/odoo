<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="kwdms_policy_doc_read_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Policy Doc Folder Read Access Group</field>  
            <field name="perm_read">True</field> 
            <field name="groups" eval="[(4, ref('kw_handbook.office_users_groups'))]"/>
        </record>

        <record id="kwdms_policy_doc_all_access_grp" model="kw_dms_security.access_groups">
            <field name="name">Policy Doc Folder All Access Group</field>  
            <field name="perm_create">True</field>          
            <field name="perm_read">True</field>  
            <field name="perm_write">True</field>          
            <field name="perm_unlink">True</field>  
            <field name="groups" eval="[(4, ref('kw_handbook.group_kw_handbook_manager'))]"/>
        </record>       

        <record id="kwdms_policy_doc_directory" model="kw_dms.directory">
            <field name="name">Policy Documents</field>  
            <field name="is_root_directory">True</field>
            <field name="root_storage" ref="kw_dms.kwdms_hr_storage"/>
            <field name="groups" eval="[(4, ref('kw_dms.kwdms_all_access_admin_grp')), (4, ref('kw_handbook_dms_integration.kwdms_policy_doc_all_access_grp')), (4, ref('kw_handbook_dms_integration.kwdms_policy_doc_read_access_grp'))]"/>
        </record>        
       
        <!--Default Config Setting for categories -->

         <!-- activate categories by default -->
        <function model="ir.config_parameter" name="set_param" eval="('kw_dms.policy_doc_folder', ref('kw_handbook_dms_integration.kwdms_policy_doc_directory'))"/>       
    </data>
</odoo>
