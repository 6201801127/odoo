<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--START : kw_onboarding_handbook, view -->


        <record id="kw_handbook_dms_integration_view_form" model="ir.ui.view">
            <field name="name">kw_onboarding_handbook.form</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="inherit_id" ref="kw_handbook.kw_handbook_form_view" />
            <field name="arch" type="xml">
               
                <field name="attachment" position="replace">
                    
                    <field name="content_file" string="Attachment" widget="pdf_viewer" options="{'size': [1000, 1000]}" filename="file_name"/>
                    <!-- <field name="file_name" invisible="1"/> -->
                </field>                

            </field>
        </record>

        <record id="kw_handbook_dms_integration_view_form_template" model="ir.ui.view">
            <field name="name">kw_onboarding_handbook.form</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="inherit_id" ref="kw_handbook.kw_handbook_template_form_view" />
            <field name="arch" type="xml">
               
                <field name="attachment" position="replace">
                    
                    <field name="content_file" string="Attachment"  filename="file_name"/>
                    <!-- <field name="file_name" invisible="1"/> -->
                </field>
                                

            </field>
        </record>

      
        

      

        <record id="kw_handbook_dms_integration_view_form_templates" model="ir.ui.view">
            <field name="name">kw_onboarding_handbook.form</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="inherit_id" ref="kw_handbook.kw_onboarding_attachment_form_template" />
            <field name="arch" type="xml">
               
                <field name="attachment" position="replace">
                    
                    <field name="content_file" string="Attachment" widget="download_link" filename="file_name" />
                    <field name="file_name" invisible="1" />
                </field>
                
                               

            </field>
        </record>
        


        <record id="kw_handbook_attachment_dms_integration_view_form" model="ir.ui.view">
            <field name="name">kw_onboarding_handbook_attachment.form</field>
            <field name="model">kw_onboarding_handbook</field>
            <field name="inherit_id" ref="kw_handbook.kw_onboarding_attachment_form" />
            <field name="arch" type="xml">

                <field name="attachment" position="replace">                    
                    <field name="content_file" string="Attachment" widget="pdf_viewer"  filename="file_name" readonly="1" options="{'size': [1000, 1000]}"/>
                    <field name="file_name" invisible="1"/>

                   <!--   <field name="attachment" widget="pdf_viewer" readonly="1" options="{'size': [1000, 1000]}"/> -->
                </field>                

            </field>
        </record>

        <record model="ir.ui.view" id="kw_handbook_dms_integration_view_tree">
            <field name="name">kw_onboarding_handbook.tree</field>
            <field name="model">kw_onboarding_handbook</field>
             <field name="inherit_id" ref="kw_handbook.kw_handbook_tree_view"/>
            <field name="arch" type="xml">             
                   
                 <field name="attachment" position="replace">
                     <field name="content_file" widget="download_link" filename="file_name" />
                     <field name="file_name" invisible="1" />
                </field>  
               
            </field>
        </record>

        <record model="ir.ui.view" id="kw_handbook_dms_integration_view_tree_template">
            <field name="name">kw_onboarding_handbook.tree</field>
            <field name="model">kw_onboarding_handbook</field>
             <field name="inherit_id" ref="kw_handbook.kw_handbook_tree_view_template"/>
            <field name="arch" type="xml">             
                   
                 <field name="attachment" position="replace">
                     <field name="content_file" widget="download_link" filename="file_name" />
                     <field name="file_name" invisible="1" />
                </field>  
               
            </field>
        </record>
        <!--END : kw_onboarding_handbook, view -->

     

       
    </data>
</odoo>