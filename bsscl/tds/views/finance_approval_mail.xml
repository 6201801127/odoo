<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">


        <record id="compute_tax_approve_mail" model="mail.template">
            <field name="name">Approval of Tax Calculation</field>
            <field name="email_from">bsscl@csm.tech</field>
            <field name="subject">Tax Calculation Approval of : ${object.employee_id.name}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="model_id" ref="tds.model_hr_declaration" />
            <field name="auto_delete" eval="False" />
            <field name="body_html">
                <![CDATA[
                     <table border="0">
                        <tr>
                            <td>
                                <div style="margin-left: 1.2rem;margin-bottom:1em;">
                                    <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                        <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                         ${object.employee_id.name},
                                    </h5>
                                    <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                        Your tax computation has been Approved.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                    ]]>
            </field>
        </record>
    </data>
</odoo>