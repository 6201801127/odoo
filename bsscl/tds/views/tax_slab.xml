<?xml version="1.0" encoding="UTF-8"?>

<odoo>



    <!--=======Tree view of Income Tax Slabs=======-->
    <record id="tax_slab_tree_view" model="ir.ui.view">
        <field name="name">tax_slab.tree</field>
        <field name="model">tax_slab</field>
        <field name="arch" type="xml">
            <tree string="Income Tax Slab" editable="bottom" delete="1">
                  <field name="date_range" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="salary_from" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="salary_to" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="tax_rate" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="gender" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="age_from" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="age_to" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="surcharge" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="cess" required="1" groups='tds.group_manager_hr_declaration'/>
                  <field name="tax_regime"  groups='tds.group_manager_hr_declaration'/>
            </tree>
        </field>
    </record>
    <!-- tax_slab search view -->
    <record id="tax_slab_view_search" model="ir.ui.view">
        <field name="name">tax_slab.view.search</field>
        <field name="model">tax_slab</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <!-- Add your fields here -->
                  <field name="date_range" />
                  <field name="salary_from" />
                  <field name="salary_to" />
                  <field name="tax_rate" />
                  <field name="gender" />
                  <field name="age_from" />
                  <field name="age_to" />
                  <field name="surcharge" />
                  <field name="cess" />
                  <field name="tax_regime"/>
                <!-- <filter string="tax_regime_new" name="New Regime" domain="[(tax_regime', '=', 'new_regime')]" /> -->
                <!-- <filter string="tax_regime_old" name="Old Regime" domain="[(tax_regime', '=', 'old_regime')]" /> -->
                  <group expand="0" string="Group By">
                    <filter name="tax_rate" string="Tax Rate" domain="" context="{'group_by':'tax_rate'}"/>
                    <filter name="tax_regime" string="Tax Regime" domain="" context="{'group_by':'tax_regime'}"/>
                    <filter name="date_range" string="Financial Year" domain="" context="{'group_by':'date_range'}"/>
                </group>
            </search>
        </field>
    </record>
    <!--============Action view of Income Tax Slab============-->
    <record id="tax_slab_action_view" model="ir.actions.act_window">
        <field name="name">Income Tax Slab</field>
        <field name="res_model">tax_slab</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(6,0,[ref('tds.group_manager_hr_declaration')])]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
          No Record To Show...
            </p>
        </field>
    </record>





</odoo>