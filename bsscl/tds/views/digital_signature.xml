<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="digital_sign_tree_view" model="ir.ui.view">
            <field name="name">Digital sign.tree</field>
            <field name="model">digital_sign</field>
            <field name="arch" type="xml">
                <tree string="Digital Signature">
                    <field name="name" invisible="0"/>
                    <field name="digital_signat" widget="image"/>
                </tree>
            </field>
        </record>


        <record id="digital_sign_form" model="ir.ui.view">
            <field name="name">Digital signature.form</field>
            <field name="model">digital_sign</field>
            <field name="arch" type="xml">
                <form string="Digital Signature">
                    <group delete="false">
                        <field name="name" invisible="0"/>
                        <field name="digital_signat"/>
                    </group>
                </form>
            </field>
        </record>


        <record id="action_digital_sign" model="ir.actions.act_window">
            <field name="name">Digital Signature</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">digital_sign</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>





    </data>


</odoo>