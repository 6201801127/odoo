	<record id="tds_report_wizard_view" model="ir.ui.view">
		<field name="name">TDS Report</field>
		<field name="model">tds_report_wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="filtered_by" widget="radio" options="{'horizontal': true}"/>
						<field name="year" attrs="{'invisible': [('filtered_by', 'in', ['employee','location','department','all'])],'required':[('filtered_by', '=', 'date')]}"/>
						<field name="month"  attrs="{'invisible': [('filtered_by', 'in', ['employee','location','department','all'])],'required':[('filtered_by', '=', 'date')]}"/>
                        <field name="employee_ids" attrs="{'invisible': [('filtered_by', 'in', ['date','location','department','all'])],'required':[('filtered_by', '=', 'employee')]}" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
						<field name="department_ids" attrs="{'invisible': [('filtered_by', 'in', ['date','location','employee','all'])],'required':[('filtered_by', '=', 'department')]}" options="{'no_open': True,'no_create':True,'no_edit':True}" widget="many2many_tags"/>
					</group>
				</group>
				<footer>
					<button name="search_tds_report" string="View Reports" type="object" class="btn-primary" groups="tds.group_report_manager_declaration"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="tds_report_wizard_action" model="ir.actions.act_window">
		<field name="name">TDS Report</field>
		<field name="res_model">tds_report_wizard</field>
		<field name="binding_view_types">form</field>
		<field name="view_mode">form</field>
        <field name="groups_id" eval="[(6,0,[ref('tds.group_report_manager_declaration')])]"/>
		<field name="view_id" ref="tds_report_wizard_view"/>
		<field name="target">new</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Records to take action...
			</p>
		</field>
	</record>





    </data>
</odoo>
