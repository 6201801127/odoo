<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tds_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tds</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="tds" string="IT Declaration" data-key="tds">
                    <h2>IT Declaration</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Date" id="date">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="tds_start_date" string="Date" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tds_start_date"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="from_day" string="From Day" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="from_day"/>
                                        <label for="to_day" string="To Day" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="to_day"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Enable TDS</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Enable TDS" id="enable_tds_paycut">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="enable_tds" string="Enable TDS" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="enable_tds"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Actual Documentation</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Actual Documentation" id="actual_documentation_paycut">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="actual_start_date" string="Actual Start Date" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="actual_start_date"/>
                                        <label for="actual_end_date" string="Actual End Date" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="actual_end_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Actual Documentation Visibility</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Actual Documentation Visibility" id="actual_documentation_visibility">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="start_month" string="Start Month" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="start_month"/>
                                        <label for="start_day" string="Start Day" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="start_day"/>
                                        <label for="end_month" string="End Month" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="end_month"/>
                                        <label for="end_day" string="End Day" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="end_day"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Company</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box" title="Company" id="company_pan_tan">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label"></span>
                                <div class="text-muted"></div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="company_pan" string="PAN" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="company_pan"/>
                                        <label for="company_tan" string="TAN" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="company_tan"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="tds_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'tds'}</field>
    </record>
</odoo>
