<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="0">

    <record id="actual_doc_verification_template" model="mail.template">
        <field name="name">Reminder - TDS</field>
        <field name="email_from">kwantify@csm.tech</field>
        <field name="subject">IT Declaration Supporting Documents :: ${(object.employee_id.name)}</field>
        <field name="email_to">${(object.employee_id.work_email or '')|safe}</field>
        <field name="model_id" ref="tds.model_hr_declaration" />
        <field name="auto_delete" eval="True" />
        <field name="body_html">
            <![CDATA[
                <table border="0">
                <tr>
                    <td>
                        <div style="margin-left: 1.2rem;margin-bottom:1em;">
                            <h5 style="font-weight: 400;margin-bottom: 0;font-size: 16px;color:#676767;">
                                <span style="color:rgb(22, 123, 158);font-size: 16px;margin-right: 2px;font-weight: 600;">Dear</span>
                                ${object.employee_id.name},
                            </h5>
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                For the FY ${ctx['current_fiscal']}, kindly upload the softcopies of your investment documents which are mentioned in the declaration form in <b>Kwantify V6 > IT Declaration > My Tax > My Declaration form </b> latest by end of <b>${ctx['end_date']}</b>.<br/><br/>

                                Failing to which, income tax will be calculated and deducted from your salary with an assumption of no savings have been made by you. .<br/><br/>
                            Please feel free to contact Finance Department in case you have any queries.<br/><br/>
                            Thanks,<br/>
                            Finance Department <br/><br/>
                            </p>
                            <div style="margin-left: 1.2rem;margin-bottom:1em;">
                            <p style="color: #676767;line-height: 145%;margin: 10px 0 0 0;font-size: 16px;">
                                -----------------------------------------------------------
                                <br/>
                            Note  ::
                            <br/>
                            This is a system generated reminder mail. Kindly do not reply to this mail. Contact Finance department in case of any discrepancies.
                            </p>
                        </div>
                        </div>
                    </td>
                </tr>
            </table>
        ]]>
        </field>
    </record>

</odoo>