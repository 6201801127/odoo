<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_exit_confirm" model="ir.ui.view">
            <field name="name">Hr Exceptions</field>
            <field name="model">hr.grievance.confirm</field>
            <field name="arch" type="xml">
                <form string="Your request will be processed through below mentioned approval steps" version="7.0">
                    <group>
                        <field name="exception_ids" nolabel="1" colspan="4">
                            <tree string="Leave Exceptions">
                                <field name="name"/>
                                <field name="description"/>
                            </tree>
                        </field>
                        <newline/>

                    </group>
                    <footer>
                        <button name="action_confirm" string="_Close"
                                colspan="1" type="object" icon="fa-window-close" />
                        <button name="request_approval" string="Request Approval"
                                colspan="1" type="object" icon="fa-smile-o" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_grievance_confirm" model="ir.actions.act_window">
            <field name="name">Your request will be processed through below mentioned approval steps</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.grievance.confirm</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_exit_confirm"/>
            <field name="target">new</field>
        </record>

        <record id="view_happroval_list" model="ir.ui.view">
            <field name="name">approvals.list.view_hr_leave_exp_form</field>
            <field name="model">approvals.list</field>
            <field name="inherit_id" ref="base_exception_and_approval.approvals_list_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='condition_check']" position="after">
                        <field name="remarks"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>