<?xml version="1.0" encoding="utf-8"?>
<openerp>
        <data>
        <record id="asset_transfer_process" model="mail.template">
            <field name="name">Asset Transfer</field>
            <field name="subject">Asset Transfer</field>
            <field name="email_from">${object.business_partner.login or ''|safe}</field>
            <field name="email_to">${object.created_by.login or uid.login or ''|safe}</field>
            <field name="model_id" ref="hr_employee_asset.model_asset_transfer"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" ><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
                        % if not ctx.get('manager') :
                                <h4>Dear ${object.business_partner.name},</h4>
                        % endif

                                ${object.asset_number} has been processed by ${object.transferred_by.name}. Kindly receive the assets to enable allocation to employees.
                </div> 

                </div>
                ]]>
            </field>
        </record>
    </data>
</openerp>
