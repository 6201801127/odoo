<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="bsscl_hr_contract_inherit_form_id" model="ir.ui.view">
            <field name="name">BSSCL Hr contract inherit form view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other']/group[@name='notes_group']" position="before">
                    <group name="contract" string="Contract Term">
                        <group>
                            <field name="date_start"/>
                            <field name="first_contract_date" attrs="{'invisible': ['|', ('first_contract_date', '=', False), ('first_contract_date', '=', 'date_start')]}"/>
                            <label for="date_end"/>
                            <div class="o_row">
                                <field name="date_end" nolabel="1"/>
                                <span class="text-muted">(If fixed-term contract)</span>
                            </div>
                            <field name="trail_date_end"/>
                            <field name="employee_type"/>
                            <field name="mode_of_promotion"/>
                        </group>
                    </group>
                </xpath>

               <!--  <xpath expr="//page[@name='information']/group[@name='main_info']/group[@name='yearly_advantages']" position="replace">
                    <group name="pf_tax_bihar" string="Professional Tax">
                                    <label for="pf_tax"/>
                                    <div class="o_row" name="pf_tax">
                                        <field name="pf_tax" nolabel="1"/>
                                        <span>/ month</span>
                                    </div>
                                </group>

                </xpath> -->

            </field>
        </record>
    
    </data>
    

</odoo>
