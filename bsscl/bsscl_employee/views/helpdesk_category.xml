<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_category_master_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.category.master.tree</field>
        <field name="model">helpdesk.ticket.category</field>
        <field name="arch" type="xml">
            <tree string="Category" editable='bottom'>
                <field name="name"/>
                <field name="category_code"/>
            </tree>
        </field>
    </record>
    <record id="hr_employee_helpdesk_ticket_category_action" model="ir.actions.act_window">
        <field name="name"> Category / वर्ग</field>
        <field name="res_model">helpdesk.ticket.category</field>
        <field name="view_mode">tree</field>
    </record>
    
    <menuitem
        id="hr_helpdesk_category_submenu"
        name="Category / वर्ग"
        action="hr_employee_helpdesk_ticket_category_action"
        parent="hr_helpdesk_config_menu"
        sequence="2"
        />

</odoo>
