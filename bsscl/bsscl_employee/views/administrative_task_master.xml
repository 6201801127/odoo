<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="employee_administrative_task_details_view_form_id" model="ir.ui.view">
            <field name="name">Employee administrative Details from view</field>
            <field name="model">administrative.task.details</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group name="task_type" string="Task Type / कार्य प्रकार">
                                <field name="task_type_id" required="1" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('confirm_button_bool','=',True)]}"/>
                                <field name="promotion_bool" invisible="1"/>
                                <field name="trf_bool" invisible="1"/>
                                <field name="spcl_duty_bool" invisible="1"/>
                                <field name="confirm_button_bool" invisible="1"/>
                                <field name="other_task_bool" invisible="1"/>
                            </group>
                            
                        </group>

                        <!-- promotion details group  -->
                        <group attrs="{'invisible':[('promotion_bool','!=',True)]}" name="promotion_details" string="Promotion Details / प्रचार विवरण">
                            <group>
                                <field name="mode_of_promotion" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}"/>
                                <field name="new_desig_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}"/>
                                <field name="salary_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}"/>
                                <field name="current_work_location" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}"/>
                            </group>
                            <group>
                                <field name="personal_concern_file_no" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}"/>
                                <field name="order_no" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}" />
                                <field name="promotion_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}" />
                                <field name="order_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}" />
                                <field name="remarks" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('promotion_bool','=',True)]}" />
                            </group>
                        </group>

                        <!-- Tranfer details group  -->
                        <group attrs="{'invisible':[('trf_bool','!=',True)]}" name="transfer_details" string="Transfer Details / स्थानांतरण विवरण">
                            <group>
                                <field name="current_work_location" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}"/>
                                <field name="transfer_work_location" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}"/>
                                <field name="attachement" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}"/>
                                <button string="Print" name="print_pdf" type="object" class="oe_highlight"/>
                            </group>
                            <group>
                                <field name="order_no" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}" />
                                <field name="order_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}" />
                                <field name="transfer_joining_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}"/>
                                <field name="remarks" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('trf_bool','=',True)]}"/>
                            </group>
                        </group>

                        <!-- Special Duty Assignment details group  -->
                        <group attrs="{'invisible':[('spcl_duty_bool','!=',True)]}" name="special_auty_assignment" string="Special Duty Assignment / विशेष कर्तव्य असाइनमेंट">
                            <group>
                                <field name="duty_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}"/>
                                <field name="current_work_location" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}" />
                                <field name="assign_by_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}" />
                            </group>
                            <group>
                                <field name="order_no" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}"/>
                                <field name="order_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}"/>
                                <field name="from_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}"/>
                                <field name="to_date" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}"/>
                                <field name="remarks" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('spcl_duty_bool','=',True)]}"/>
                            </group>
                        </group>

                        <!-- ***************************Others details group  **************************************-->
                        <group attrs="{'invisible':[('other_task_bool','!=',True)]}" name="others_tsk" string="Others /अन्य">
                            <group>
                                <field name="current_work_location" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('other_task_bool','=',True)]}" />
                                <field name="order_date" string="Current Date / आज की तारीख" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('other_task_bool','=',True)]}"/>
                            </group>
                            <group>
                                <field name="assign_by_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('other_task_bool','=',True)]}" />
                                <field name="remarks" attrs="{'readonly':[('confirm_button_bool','=',True)],'required':[('other_task_bool','=',True)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--******************************* Ad ministrative Task master  *******************************************-->
            <!--*********** Administrative task master from view ************** -->
            <record id="administrative_task_master_view_form_id" model="ir.ui.view">
                <field name="name">Administrative task master view form</field>
                <field name="model">administrative.task.master</field>
                <field name="arch" type="xml">
                    <form string="">
                        <sheet>
                            <group>
                                <group string="Task Type">
                                    <field name="name" required="1"/>
                                    <field name="ref_code" required="1"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!-- ************ Administrative task master tree view *************-->
            <record id="administrative_task_master_view_tree_id" model="ir.ui.view">
                <field name="name">Administrative task master view tree</field>
                <field name="model">administrative.task.master</field>
                <field name="arch" type="xml">
                    <tree string="">
                        <field name="name"/>
                        <field name="ref_code"/>
                    </tree>
                </field>
            </record>

            <!-- ****************** Administrative task master action **************** -->
            <record id="administrative_task_master_action" model="ir.actions.act_window">
                <field name="name">Administrative Task Type / प्रशासनिक कार्य प्रकार</field>
                <field name="res_model">administrative.task.master</field>
                <field name="view_mode">tree,form</field>
            </record>
        <!--************************************************* End ************************************************ -->

        <!--******************************************* Duty type master all views *******************************  -->
            <!--*********** Duty type master from view  ************-->
            <record id="duty_type_master_view_form_id" model="ir.ui.view">
                <field name="name">Duty type master view form</field>
                <field name="model">duty.type.master</field>
                <field name="arch" type="xml">
                    <form string="">
                        <sheet>
                            <group>
                                <group string="Duty Type">
                                    <field name="name" required="1"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!--************ Duty Type master tree view ************* -->
            <record id="duty_type_master_view_tree_id" model="ir.ui.view">
                <field name="name">Duty type master view tree</field>
                <field name="model">duty.type.master</field>
                <field name="arch" type="xml">
                    <tree string="">
                        <field name="name"/>
                    </tree>
                </field>
            </record>

            <!--**************** Duty Type master action ****************** -->
            <record id="duty_type_master_action_id" model="ir.actions.act_window">
                <field name="name">Duty Type / कर्तव्य प्रकार</field>
                <field name="res_model">duty.type.master</field>
                <field name="view_mode">tree,form</field>
            </record>
        <!--******************************************************* End ******************************************* -->

        <!--**************** Administrative task details Action ****************** -->
        <record id="administrative_task_details_action_id" model="ir.actions.act_window">
            <field name="name">Administrative task details Action</field>
            <field name="res_model">administrative.task.details</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- ************************* Administrative master menu ************************************ -->
            <menuitem
                id="administrative_task_master_menu_id"
                name="Administrative Task Master / प्रशासनिक टास्क मास्टर"
                parent="hr.menu_human_resources_configuration" 
                sequence="222"/>
                <!-- *****administrative sub menu ********** -->
                    <menuitem
                        id="task_type_sub_menu_id"
                        name="Task Type / कार्य प्रकार"
                        parent="administrative_task_master_menu_id"
                        action="administrative_task_master_action"
                        sequence="1"/>
                    <menuitem
                        id="duty_type_sub_menu_id"
                        name="Duty Type / कर्तव्य प्रकार"
                        parent="administrative_task_master_menu_id"
                        action="duty_type_master_action_id"
                        sequence="2"/>
                        
        <!--*************************************** End  *********************************************-->
    
    </data>
    

</odoo>
