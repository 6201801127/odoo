        <!--Add Discipline button in the Employee Form-->
        <record id="employee_form_inherit_disciplinary" model="ir.ui.view">
            <field name="name">inherit.employee.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(disciplinary_action_details)d"
                            class="oe_stat_button"
                            icon="fa-info-circle"
                            type="action"
                    >
                        <field string="Disciplinary Action" name="discipline_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

        <menuitem id="admin_activity" name="Administration Activity / प्रशासन गतिविधि " parent="hr.menu_hr_root" groups="bsscl_employee.group_hr_ra"  sequence="23"/>

        <menuitem id="disciplinary_action" name="Disciplinary Actions / अनुशासनिक कार्यवाही" parent="admin_activity" groups="bsscl_employee.group_hr_ra"  sequence="23"/>
        <menuitem id="disciplinary_action_create" action="action_disciplinary_action" groups="bsscl_employee.group_hr_ra"  name="Disciplinary Action / अनुशासनिक कार्यवाही" parent="disciplinary_action"  sequence="1"/>
        <menuitem id="disciplinary_category_view" action="action_disciplinary_category_view" groups="bsscl_employee.group_hr_ra" name="Discipline Category / अनुशासनात्मक श्रेणी" parent="disciplinary_action"
        sequence="3"/>

     
    </data>
</odoo>
