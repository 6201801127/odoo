<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record model="ir.ui.view" id="hr_job_simple_form_inherit">
            <field name="name">hr.job.tree.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='set_recruit']" position="attributes">
                    <attribute name="string">Start Recruitment / भर्ती प्रारंभ करें
                    </attribute>
                </xpath>
                <xpath expr="//header/button[@name='set_open']" position="attributes">
                    <attribute name="string">Stop Recruitment / भर्ती बंद करो

                    </attribute>
                </xpath> 
                
                <xpath expr="//sheet/div[2]/label[@for='name']" position="attributes">
                    <attribute name="string">Job Position / पद</attribute>
                </xpath> 
                <xpath expr="//sheet/notebook/page[1]" position="attributes">
                    <attribute name="string">Job Description / नौकरी का विवरण</attribute>
                </xpath> 
                <xpath expr="//sheet/notebook/page/div/label[@for='description']" position="attributes">
                    <attribute name="string">Job Description / नौकरी का विवरण</attribute>
                </xpath> 
                <xpath expr="//sheet/notebook/page[2]" position="attributes">
                    <attribute name="string">Recruitment / भर्ती</attribute>
                </xpath> 
                <xpath expr="//sheet/notebook/page/group/group[1]/field[@name='company_id']" position="attributes">
                    <attribute name="string">Company / कंपनी</attribute>
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_create_edit': True}</attribute>

                </xpath> 
                <xpath expr="//sheet/notebook/page/group/group[1]/field[@name='department_id']" position="attributes">
                    <attribute name="string">Department / विभाग</attribute>
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_create_edit': True}</attribute>

                </xpath> 
                <xpath expr="//sheet/notebook/page/group/group[1]/field[@name='address_id']" position="attributes">
                    <attribute name="string">Job Location / नौकरी करने का स्थान
                    </attribute>
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_create_edit': True}</attribute>

                </xpath> 
                <xpath expr="//sheet/notebook/page/group/group[2]/field[@name='no_of_recruitment']" position="attributes">
                    <attribute name="string">Expected New Employees / अपेक्षित नए कर्मचारी</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group[2]/field[@name='user_id']" position="attributes">
                    <attribute name="string">Recruiter / भर्ती</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr.action_hr_job" model="ir.actions.act_window">
            <field name="name">Job Positions / पद</field>
            <field name="res_model">hr.job</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr.view_job_filter"/>
            <field name="context">{"search_default_Current":1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Ready to recruit more efficiently?
              </p><p>
                Let's create a job position.
              </p>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_job_simple_tree_inherit">
            <field name="name">hr.job.tree.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Name / नाम</attribute>
                </xpath> 
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="string">Department / विभाग</attribute>
                </xpath>
                <xpath expr="//field[@name='no_of_employee']" position="attributes">
                    <attribute name="string">Current Number Of Employee / कर्मचारी की वर्तमान संख्या</attribute>
                </xpath>
                <xpath expr="//field[@name='no_of_recruitment']" position="attributes">
                    <attribute name="string">Expected New Employee / अपेक्षित नए कर्मचारी</attribute>
                </xpath>
                <xpath expr="//field[@name='expected_employees']" position="attributes">
                    <attribute name="string">Total Forecasted Employee / कुल पूर्वानुमानित कर्मचारी </attribute>
                </xpath>
                
                <xpath expr="//field[@name='no_of_hired_employee']" position="attributes">
                    <attribute name="string">Hired Employee / काम पर रखा कर्मचारी </attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="string">Status / स्थति </attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="string">Company / कंपनी</attribute>
                </xpath>
                              
             </field>
        </record>

        <record model="ir.ui.view" id="hr_emp_tag_tree_inherit">
            <field name="name">hr.emp.tag.tree.inherit</field>
            <field name="model">hr.employee.category</field>
            <field name="inherit_id" ref="hr.view_employee_category_list"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Tag Name / टैग नाम</attribute>
                </xpath> 
                
                              
             </field>
        </record>

        <record model="ir.ui.view" id="hr_department_tree_inherit">
            <field name="name">hr.department.tree.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='display_name']" position="attributes">
                    <attribute name="string">Display Name / प्रदर्शित होने वाला नाम</attribute>
                </xpath> 
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="string">Company / कंपनी</attribute>
                </xpath> 
                <xpath expr="//field[@name='manager_id']" position="attributes">
                    <attribute name="string">Manager / प्रबंधक</attribute>
                </xpath> 
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="string">Parent Department / मूल विभाग</attribute>
                </xpath> 
                
                              
             </field>
        </record>

        <record model="ir.ui.view" id="hr_department_form_inherit">
            <field name="name">hr.department.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//sheet/group/field[@name='name']" position="attributes">
                    <attribute name="string">Department Name / विभाग का नाम</attribute>
                </xpath> 
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="string">Company / कंपनी</attribute>
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_create_edit': True}</attribute>

                </xpath> 
                <xpath expr="//field[@name='manager_id']" position="attributes">
                    <attribute name="string">Manager / प्रबंधक</attribute>
                </xpath> 
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="string">Parent Department / मूल विभाग</attribute>
                </xpath> 
                
                              
             </field>
        </record>

        
    </data>
</odoo>