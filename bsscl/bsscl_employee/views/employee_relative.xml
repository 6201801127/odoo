<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

                <!-- Employee relative details by Khusboo -->

        <record model="ir.ui.view" id="view_employee_relative_tree">
            <field name="name">view.employee.relative.tree</field>
            <field name="model">employee.relative</field>
            <field name="arch" type="xml">
                <tree string="Relative" editable="bottom">
                    <field name="employee_id" invisible="1" />
                    <field name="relative_type" invisible="1" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    <field name="name" placeholder="Enter Name" invisible="1"/>
                    <field name="salutation" required="True"/>
                    <field name="name" required = 'True'/>
                    <field name="relate_type" required="True" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    <field name="relate_type_name" invisible="1"/>
                    <field name="birthday" placeholder="Enter Date of Birth"/>
                    <field name="place_of_birth" placeholder="Enter Place of Birth"/>
                    <field name="occupation" placeholder="Enter Occupation"/>
                    <field name="gender"/>
                    <field name="age" invisible="1"/>
                    <field name="twins"/>
                    <field name="divyang"/>
                    <field name="medical"/>
                    <field name="tuition" attrs="{'readonly':[('relate_type_name','not in',('Son','Daughter'))]}"/>
                    <field name="hostel" attrs="{'readonly':[('relate_type_name','not in',('Son','Daughter'))]}"/>
                    <field name="ltc"/>
                    <field name="status"/>
                    <field name="status2" string="Surviving Status"/>
                    <field name="date_of_deadth" attrs="{'invisible':[('status2','not in',('non_surviving'))], 'required':[('status2','in',('non_surviving'))]}"/>
                    <!-- <field name="prec_pf" sum="Total PF"/>
                    <field name="prec_gratuity" sum="Total Gratuity"/>
                    <field name="prec_pension" sum="Total Pension"/> -->
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_employee_relative_form">
            <field name="name">view.employee.relative.form</field>
            <field name="model">employee.relative</field>
            <field name="arch" type="xml">
                <form string="Relative" version="9.0">
                    <sheet>
                        <field name="employee_id" invisible="1" />
                        <group col="4" colspan="4">
                            <field name="relative_type" tabindex="1" placeholder="Enter Relative Type" invisible="1"/>
                            
                            <label for="name"/>
                            <div  class="oe_title">
                                <field name="salutation" required="True"/>
                                <field name="name"/>
                            </div>
                            <field name="birthday" tabindex="4" placeholder="Enter Date of Birth"/>
                            <field name="place_of_birth" placeholder="Enter Place of Birth" tabindex="5"/>
                            <field name="occupation" placeholder="Enter Occupation" tabindex="6"/>
                            <field name="gender" placeholder="Enter Gender" tabindex="7" invisible="1" attrs="{'readonly': [('relative_type', 'not in', ['Other', 'Children'])]}"/>
                            <field name="age" invisible="1"/>
                            <field name="medical"/>
                            <field name="relate_type_name" invisible="1"/>
                            <field name="tuition" attrs="{'readonly':[('relate_type_name','not in',('Son','Daughter'))]}"/>
                            <field name="ltc"/>
                            <field name="status"/>
                            <field name="status2"/>
                            <field name="date_of_deadth" attrs="{'invisible':[('status2','not in',('non_surviving'))], 'required':[('status2','in',('non_surviving'))]}"/>
                            <field name="twins"/>
                            <field name="divyang"/>
                            <!-- <field name="prec_pf" sum="Total PF" attrs="{'readonly':[('status','not in',('dependant'))]}"/>
                            <field name="prec_gratuity" sum="Total Gratuity" attrs="{'readonly':[('status','not in',('dependant'))]}"/>
                            <field name="prec_pension" sum="Total Pension" attrs="{'readonly':[('status','not in',('dependant'))]}"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_emp_relatives_list" model="ir.actions.act_window">
            <field name="name">Relatives / रिश्तेदार</field>
            <field name="res_model">employee.relative</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.id', '=', active_id)]</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
        </record>


        <!-- Employee language details by Khusboo -->

        <record model="ir.ui.view" id="view_employee_language_tree">
            <field name="name">view.employee.language.tree</field>
            <field name="model">employee.language</field>
            <field name="arch" type="xml">
                <tree string="Employee Language">
                    <field name="employee_id" invisible="1" />
                    <field name="language" />
                    <field name="read_lang" />
                    <field name="write_lang" />
                    <field name="speak_lang" />
                    <field name="mother_tongue" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_employee_language_form">
            <field name="name">view.employee.language.form</field>
            <field name="model">employee.language</field>
            <field name="arch" type="xml">
                <form string="Employee Language" version="9.0">
                    <sheet>
                        <field name="employee_id" invisible="1" />
                        <group col="2" colspan="4">
                            <field name="language" tabindex="1" placeholder="Enter Language"/>
                        </group>
                        <group col="6" colspan="6">
                            <field name="read_lang" tabindex="2" widget="radio" placeholder="Enter Reading Ability"/>
                            <field name="write_lang" tabindex="3" widget="radio" placeholder="Enter Writing Ability"/>
                            <field name="speak_lang" tabindex="4" widget="radio" placeholder="Enter Speaking Ability"/>
                        </group>
                        <group string="Mother Tongue/मातृ भाषा" colspan="4">
                            <field name="mother_tongue" tabindex="5" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_emp_languages_list" model="ir.actions.act_window">
            <field name="name">Languages / भाषा</field>
            <field name="res_model">employee.language</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>

            
        </record>

        <!-- Employee education details by Khusboo -->
        <record model="ir.ui.view" id="view_employee_education_tree">
            <field name="name">view.employee.education.tree</field>
            <field name="model">employee.education</field>
            <field name="arch" type="xml">
                <tree string="Education">
                    <field name="employee_id" invisible="1" />
                    <field name="from_date" />
                    <field name="to_date" />
                    <field name="grade" />
                    <field name="school_name" />
                    <field name="stream" />
                    <field name="passing_year" />
                    <field name="percentage" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_employee_education_form">
            <field name="name">view.employee.education.form</field>
            <field name="model">employee.education</field>
            <field name="arch" type="xml">
                <form string="Education" version="9.0">
                    <sheet>
                        <field name="employee_id" invisible="1" />
                        <group col="4" colspan="4">
                            <field name="from_date" tabindex="1" placeholder="Enter From Date" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="to_date" tabindex="3" placeholder="Enter To Date" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="grade" tabindex="11" placeholder="Enter Education Field/Major" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="field" tabindex="13" placeholder="Enter Field" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="school_name" tabindex="13" placeholder="Enter School Name" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="stream" tabindex="13" placeholder="Enter Stream" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="passing_year" tabindex="13" placeholder="Enter Pasing Year" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="percentage" tabindex="13" placeholder="Enter Percentage" attrs="{'invisible': [('illiterate', '!=', False)], 'required': [('illiterate', '=', False)]}" />
                            <field name="edu_type" tabindex="19" attrs="{'invisible': [('illiterate', '!=', False)]}"/>
                            <field name="country_id" tabindex="21" placeholder="Enter Country" attrs="{'invisible': [('edu_type', '!=', 'Abroad')], 'readonly': [('illiterate', '!=', False)]}" />
                            <field name="state_id" tabindex="23" placeholder="Enter State" attrs="{'invisible': [('edu_type', '!=', 'Local')], 'invisible': [('illiterate', '!=', False)]}" />
                            <field name="province" tabindex="25" placeholder="Enter Province" attrs="{'invisible': [('edu_type', '!=', 'Local')], 'invisible': [('illiterate', '!=', False)]}" />
                            <field name="illiterate" tabindex="27" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>
        <record id="action_emp_education_list" model="ir.actions.act_window">
            <field name="name">Education Details / शिक्षा विवरण</field>
            <field name="res_model">employee.education</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
        </record>

    </data>
</odoo>
