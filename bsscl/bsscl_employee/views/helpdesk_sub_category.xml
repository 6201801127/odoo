<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_subcategory_form" model="ir.ui.view">
        <field name="name">view.helpdesk_subcategory.form</field>
        <field name="model">helpdesk.ticket.subcategory</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="category_code_id" options="{'no_create':True,'no_delete':True,'no_update':True,'no_open':True}" required="1"/>
                        </group>
                        
                    </group>
                </sheet>
                
            </form>
        </field>
    </record>

    <record id="view_helpdesk_subcategory_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_subcategory.tree</field>
        <field name="model">helpdesk.ticket.subcategory</field>
        <field name="arch" type="xml">
            <tree string="Team">
                <field name="name"/>
                <field name="category_code_id" required="1"/>
            </tree>
        </field>
    </record>
    <record id="hr_employee_helpdesk_ticket_subcategory_action" model="ir.actions.act_window">
        <field name="name"> Sub Category / उप श्रेणी</field>
        <field name="res_model">helpdesk.ticket.subcategory</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
        id="hr_helpdesk_sub_category_submenu"
        name="Sub Category / उप श्रेणी"
        action="hr_employee_helpdesk_ticket_subcategory_action"
        parent="hr_helpdesk_config_menu"
        sequence="3"
        />

</odoo>