<odoo>
    <data>
        <record id="hr_employee_rewards_details_tree" model="ir.ui.view">
            <field name="name">hr_employee_rewards_details.tree</field>
            <field name="model">hr.employee.rewards_details</field>
            <field name="arch" type="xml">
                <tree string="Employee Rewards Tree"  editable="bottom">
                    <field name="employee_id" invisible="1"/>
                    <field name="order_no"/>
                    <field name="order_date" />
                    <field name="issuer_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" />
                    <field name="reward_date" />
                    <field name="reward_type" />
                    <field name="curr_office"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
        <record id="hr_employee_rewards_details_form" model="ir.ui.view">
            <field name="name">hr_employee_rewards_details.form</field>
            <field name="model">hr.employee.rewards_details</field>
            <field name="arch" type="xml">
                <form string="Employee Rewards Form">
                    <style>
                        .o_form_view .o_group.o_inner_group > tbody > tr > td.o_td_label{min-width: 200px !important;}
                    </style>
                    <group>
                        <group>
                            <field name="employee_id" invisible="1"/>
                            <field name="order_no"/>
                            <field name="order_date" />
                            <field name="issuer_id" />
                            <field name="reward_date" />
                            <field name="reward_type" />
                            <field name="curr_office"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="hr_employee_rewards_details_action" model="ir.actions.act_window">
            <field name="name">Employee Rewards </field>
            <field name="res_model">hr.employee.rewards_details</field>
            <field name="view_mode">tree</field>
        </record>


        

    </data>
</odoo>