<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='employee_document_form_view'>
        <field name="name">hr.employee.document.form</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="number"/>
                            <!-- <field name="attachment_ids" widget="many2many_binary" class="oe_inline" required="1"/> -->
                            
							<!-- <field name="attachment_ids" widget="many2many_binary"/> -->
                            <field name="employee_ref" invisible="0" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" required="1"/>
                            
                            <!-- <div ><strong>Attachment</strong></div>
                            <div>
                                <field name="attachment_ids" widget="many2many_binary"/>
                                <label for="attachment_ids" string="(Document size should be less than 2MB(Any type of documents))" class="text-danger" />
                            </div> -->
                            <label for="attachment_ids" />
                            <div>
                                <field name="attachment_ids"  widget="many2many_binary"/>
                                <p style="color:red;">(Document size should be less than 2MB(Any type of documents))</p>
                            </div>
                             
                        </group>

                        <group>
                            <field name="issue_date" required="1"/>
                            <field name="expiry_date" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description/विवरण">
                            <!-- <field name="description"/> -->
                            <label for="description" />
                            <div>
                                <field name="description" required='1'/>
                                <p style="color:red;">(Description must not exceed 500 characters)</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="activity_ids" widget="mail_activity" />
						<field name="message_ids" widget="mail_thread" />
					</div>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='employee_document_tree_view'>
        <field name="name">hr.employee.document.tree</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <tree string="Documents / दस्तावेज़">
                <field name="name"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>

    
</odoo>