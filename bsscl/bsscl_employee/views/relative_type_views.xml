<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_relative_view_tree" model="ir.ui.view">
            <field name="name">relative.type.tree</field>
            <field name="model">relative.type</field>
            <field name="arch" type="xml">
                <tree string="Relative" editable="bottom">
                    <field name="name" string='Name / नाम' required="1"/>
                    <field name="gender"  string='Gender / लिंग'/>
                </tree>
            </field>
        </record>

        <record id="hr_relative_action" model="ir.actions.act_window">
            <field name="name">Relative / रिश्तेदार</field>
            <field name="res_model">relative.type</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="hr_relative_menu"
            name="Relative / रिश्तेदार"
            action="hr_relative_action"
            parent="hr.menu_human_resources_configuration"
            sequence="93"
            />
    </data>
</odoo>