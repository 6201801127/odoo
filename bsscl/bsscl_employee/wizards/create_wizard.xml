<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="reject_change_wizard_id" model="ir.ui.view">
            <field name="name">Reject Wizard</field>
            <field name="model">reject.change.request</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="reject_reason"/>
                            </group>
                            
                        </group>

                    </sheet>
                    <footer>
                        <button name="confirm_reject" string="Confirm / पुष्टि करना" type="object" class="btn-primary"/>
                        <button string="Cancel / रद्द करना"  class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="reject_change_request" model="ir.actions.act_window">
            <field name="name">Reject Wizard</field>
            <field name="res_model">reject.change.request</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reject_change_wizard_id"/>
            <field name="target">new</field>
        </record>
    </data>
    

</odoo>
