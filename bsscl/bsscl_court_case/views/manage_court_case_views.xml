        <record id="court_case_view_record_action" model="ir.actions.act_window">
            <field name="name"> View Court Case / कोर्ट केस देखें</field>
            <field name="res_model">court.case.management</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="domain">[('status','=','confirm')]</field> -->
            <field name="domain">[('status','=','approved')]</field>
