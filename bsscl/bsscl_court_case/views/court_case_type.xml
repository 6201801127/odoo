<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="court_case_type_master_tree_view" model="ir.ui.view">
            <field name="name">court.case.type.tree</field>
            <field name="model">court.case.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable='bottom'>
                    <field name="case_type" required="1"/>
                    <field name="code" required="1"/>
                </tree>
            </field>
        </record>


        <record id="court_case_type_action_window" model="ir.actions.act_window">
            <field name="name">Court Case Type / कोर्ट केस प्रकार</field>
            <field name="res_model">court.case.type</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
        id="model_master_case_type_menu"
        name="Court Case Type / कोर्ट केस प्रकार"
        parent="bsscl_court_case.bsscl_court_case_master_menu"
        action="bsscl_court_case.court_case_type_action_window"
        sequence="1"
        />

    </data>
</odoo>