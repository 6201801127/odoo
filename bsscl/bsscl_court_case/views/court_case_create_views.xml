<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="court_case_create_view_tree" model="ir.ui.view">
            <field name="name">court.case.create.view.tree</field>
            <field name="model">court.case.management</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="job_id"/>
                    <field name="case_type"/>
                    <field name="case_no"/>
                    <field name="case_subject"/>
                    <field name="case_description"/>
                    <field name="arising_case"/>
                    <field name="case_copy"/>
                    <field name="filed_on"/>
                    <field name="petitioner_name"/>
                    <field name="court_location_id"/>
                    <field name="emp_id"/>
                    <field name="case_sub_type"/>
                    <field name="case_file_no"/>
                    <field name="respondent_name_id"/>
                    <field name="address"/>

                </tree>
            </field>
        </record>
        <record id="court_case_create_view_form" model="ir.ui.view">
            <field name="name">court.case.create.form</field>
            <field name="model">court.case.management</field>
            <field name="arch" type="xml">
                <form duplicate="0">
                    <header>
                        <button name="apply_btn" string="Apply / आवेदन" type="object" class="oe_highlight" attrs="{'invisible':[('status','not in','draft')]}" />
                        <button name="cancel_btn" string="Cancel / रद्द" type="object" class="oe_highlight" attrs="{'invisible':[('status','not in','draft')]}" />
                        <!-- <field name="status" widget="statusbar" statusbar_visible="draft,applied,approved,cancel,reject,confirm" /> -->
                        <field name="status" widget="statusbar" statusbar_visible="draft,applied,approved,cancel,reject" />
                    </header>
                    <sheet>
                        
                        <group>
                            <group >
                                <field name="job_id" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"/>
                                <field name="case_type" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"/>
                                <field name="case_no"/>
                                <field name="case_subject"/>
                                <field name="case_description"/>
                                <field name="arising_case"/>
                                <field name="filed_on"/>
                                <field name="case_copy"/>
                            </group>
                            <group>
                                <field name="petitioner_name" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}" required='1'/>
                                <field name="court_location_id" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"/>
                                <field name="emp_id" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"/>
                                <field name="case_sub_type" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"/>
                                <field name="case_file_no"/>
                                <field name="respondent_name_id" options="{'no_open': True,'no_create':True,'no_edit':True,'no_delete':True}"/>
                                <field name="address"/>
                            </group>
                            
                            
                        </group>
                        <notebook>
                            <page name="case" string="Case Hearing Details / मामले की सुनवाई का विवरण">
                                <field name="hearing_detail_ids" >  
                                    <tree editable='bottom'>  
                                        <field name="employee_id" width='350px'/>
                                        <field name="case_hearing_date" width='350px'/>
                                        <field name="description" width='350px'/>
                                        <field name="document" filename="file_name" widget="binary" width='350px'/>
                                        <field name="file_name" invisible="1" width='350px'/>
                                    </tree>  
                                </field>
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>
        <record id="court_case_create_action" model="ir.actions.act_window">
            <field name="name"> Court Case / मुकदमा</field>
            <field name="res_model">court.case.management</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('create_uid','=',uid),('petitioner_name.user_id','=',uid)]</field>
        </record>

        <menuitem id="bsscl_court_case_root_menu"
        web_icon="bsscl_court_case,static/description/icon.png"
		name="Court Case / मुकदमा" sequence="20"/>

        <menuitem id="bsscl_court_case_main_menu"
        name="Court Case / मुकदमा"
        parent="bsscl_court_case.bsscl_court_case_root_menu"
        sequence="1"
        />

        <menuitem
        id="model_create_court_case_menu"
        name="Create Court Case / कोर्ट केस बनाएं"
        parent="bsscl_court_case.bsscl_court_case_main_menu"
        action="bsscl_court_case.court_case_create_action"
        sequence="1"
        />
        
    
    </data>
    

</odoo>
