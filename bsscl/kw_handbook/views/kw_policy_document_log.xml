<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_policy_document_log_view_form" model="ir.ui.view">
        <field name="name">Policy Document Log Form</field>
        <field name="model">kw_policy_document_log</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" import="false">
                <field name="get_handbook_id" invisible="1"/>
                <field name="handbook_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <record id="kw_policy_document_log_action" model="ir.actions.act_window">
        <field name="name">Policy Document</field>
        <field name="res_model">kw_policy_document_log</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="kw_policy_document_log_menu"
              name="Policy Document"
              action="kw_policy_document_log_action"
              parent="kw_onboarding_handbook_configuration_menu"
              sequence="3"/>

</odoo>
