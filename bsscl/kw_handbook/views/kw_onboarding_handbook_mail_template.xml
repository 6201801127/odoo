<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kw_onboarding_handbook_mail_template" model="mail.template">
            <field name="name">Mail To Employee</field>
            <field name="email_from">kwantify@csm.tech</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Employee Handbook Policy Revised or Update</field>
            <field name="model_id" ref="kw_handbook.model_kw_policy_document_log"/>
            <field name="body_html">
                <![CDATA[
                    <table border="0" cellspacing="0" cellpadding="0" width="100%" style="padding: 0 60px;">
                        <tr>
                            <td style="padding-bottom: 10px;color:#333;font-size: 16px;font-weight: 400;line-height: 1;"> <span style="font-weight: 600;color: #167b9e;">Hello </span> <span style="font-weight: 600;color: #167b9e;">All</span>,</td>
                        </tr>
                        <tr>
                            <td style="font-size: 16px;color: #585353;padding-bottom: 30px;">			
                                We have added new policy document on kwantify.
                            </td>
                        </tr>

                        % for rec in ctx['records']:
                        <tr>
                            <td style="padding-bottom:15px;">
                                <table>
                                    <tr>
                                        <td style="color: #35baef;font-size: 1.3em;padding-bottom: 15px;">${(rec.get_handbook_id.title) | safe}</td>
                                    </tr>
                                    <tr>
                                        <td style="color: #585353;padding-bottom: 15px;line-height: 125%">${(rec.get_handbook_id.description) | safe}</td>
                                    </tr>
                                    <tr>
                                        <td >
                                            <a href="/web#db=${'db_name' in ctx and ctx['db_name'] or ''}&amp;view=${'view' in ctx and ctx['view'] or ''}&amp;action=${'action_id' in ctx and ctx['action_id'] or ''}&amp;id=${(rec.get_handbook_id.id) | safe}&amp;view_type=form" target="_blank" style="color:#2ab1e0;font-size: 15px;">Read More</a>
                                        </td>
                                    </tr>
                                </table>
                                % if not rec_last
                                    <hr>
                                % endif 
                            </td>
                        </tr>
                        
                        % endfor
                        <!-- mail body ends -->

                    </table>
                       
                ]]>
            </field>
        </record>
    </data>
</odoo>
