<odoo>
	<data>
        <record id="account_catagories_inherited_form" model="ir.ui.view">
            <field name="name">account.account.type.inherited.form</field>
            <field name="model">account.account.type</field>
            <field name="inherit_id" ref="account.view_account_type_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="group_type" required="1"/>
                </field>
                <field name="name" position="after">
                    <field name="code" required="1"/>
                    <field name="internal_group"/>
                </field>
                <field name="name" position="attributes">
                    <attribute name="string">Group Head</attribute>
                    <attribute name="required">1</attribute>
                </field>

            </field>
        </record>

        <record id="account.view_account_type_form" model="ir.ui.view">
            <field name="name">account.account.type.form</field>
            <field name="model">account.account.type</field>
            <field name="arch" type="xml">
                <form string="Account Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type"/>
                                <!-- <field name="code" readonly='0'/> -->
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="include_initial_balance"/>
                            </group>
                        </group>
                        <separator string="Description"/>
                        <field name="note"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_catagories_inherited_tree" model="ir.ui.view">
            <field name="name">account.account.type.inherited.tree</field>
            <field name="model">account.account.type</field>
            <field name="inherit_id" ref="account.view_account_type_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="sequence" widget="handle"/>
                    <field name="group_type" />
                </field>
                <field name="name" position="after">
                    <field name="code" />
                </field>
                <field name="name" position="attributes">
                    <attribute name="string">Group Head</attribute>
                </field>
            </field>
        </record>


        <record id="account.action_account_type_form" model="ir.actions.act_window">
            <field name="name">Group Head</field>
            <field name="res_model">account.account.type</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="search_view_id" ref="view_account_type_search"/> -->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Define a new account type
              </p><p>
                An account type is used to determine how an account is used in
                each journal. The deferral method of an account type determines
                the process for the annual closing. Reports such as the Balance
                Sheet and the Profit and Loss report use the category
                (profit/loss or balance sheet).
              </p>
            </field>
        </record>

    </data>
</odoo>
