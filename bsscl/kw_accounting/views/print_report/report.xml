<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <report
            id="account_tax_invoices"
            model="account.move"
            string="Tax Invoice"
            report_type="qweb-pdf"
            name="kw_accounting.tax_invoice_reports"
            file="kw_accounting.tax_invoice_reports"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
            groups="account.group_account_invoice"
        />

        <report
            id="account_vendor_bill"
            model="account.move"
            string="Bill"
            report_type="qweb-pdf"
            name="kw_accounting.vendor_bill_report"
            file="kw_accounting.vendor_bill_report"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
            groups="account.group_account_invoice"
        />

        <report
            id="account_payment_receipt_voucher"
            model="account.payment"
            string="Voucher"
            report_type="qweb-pdf"
            name="kw_accounting.payment_receipt_voucher_report"
            file="kw_accounting.payment_receipt_voucher_report"
        />

        <report
            id="account_all_voucher"
            model="account.move"
            string="Voucher"
            report_type="qweb-pdf"
            name="kw_accounting.account_voucher_report"
            file="kw_accounting.account_voucher_report"
        />

    </data>
</odoo>