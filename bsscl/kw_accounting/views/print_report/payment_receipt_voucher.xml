<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="payment_voucher">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />

            </t>
        </template>
        <template id="receipt_voucher">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />

            </t>
        </template>
        
        <template id="account_payment_receipt_voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o.payment_type == 'outbound'">
                        <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                        <t t-call="kw_accounting.payment_voucher" t-lang="lang"/>
                    </t>
                    <t t-if="o.payment_type == 'inbound'">
                        <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                        <t t-call="kw_accounting.receipt_voucher" t-lang="lang"/>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>