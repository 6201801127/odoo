<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="customer_invoice">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                
            </t>
        </template>

        <template id="tax_invoice_reports">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.sudo().lang if o.type in ('out_invoice', 'out_refund') else o.partner_id.lang"/>
                    <t t-call="kw_accounting.customer_invoice" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>