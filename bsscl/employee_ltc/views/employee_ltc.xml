    <!--===========Form view of Employee LTC Claim===========-->
    <record id="employeeltc_claim_form_view" model="ir.ui.view">
        <field name="name">employee.ltc.claim.form</field>
        <field name="model">employee.ltc.claim</field>
        <field name="arch" type="xml">
            <form string="LTC">
                <header>
                    <field name="check_self" invisible="True"/>
                    <button name="button_to_approve" string="Send for Approval" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_reset_to_draft" string="Send Back" type="object" states="to_approve"/>
                    <!-- <button name="button_approved" string="Forward" class="oe_highlight" type="object" states="to_approve" groups="employee_ltc.group_ltc_manager"/> -->
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" attrs="{'invisible': ['|',('check_self', '=', False),('state', '!=', 'to_approve')]}"/>
                    <!-- <button name="open_ltc_claim_wizard" string="Settle" class="oe_highlight" type="object" states="approved" groups="employee_ltc.group_ltc_manager"/> -->
                    <button name="open_ltc_claim_wizard" string="Settle" class="oe_highlight" type="object" attrs="{'invisible': ['|',('check_self', '=', False),('state', '!=', 'approved')]}"/>
                    <!-- <button name="button_reject" string="Reject" type="object" states="to_approve" groups="employee_ltc.group_ltc_manager"/> -->
                    <button name="button_reject" string="Reject" type="object" attrs="{'invisible': ['|',('check_self', '=', False),('state', '!=', 'to_approve')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,settled,rejected" />
                </header>
                <sheet>
                    <group>
                        <group>
<!--                            <field name="employee_id" readonly="1"/>-->
                            <field name="employee_id" string='Requested By' readonly="1" options="{'no_open':True}"/>
                            <field name="branch_id" readonly="1" options="{'no_open':True}"/>
                            <field name="department_id" readonly="1" options="{'no_open':True}"/>
                            <field name="job_id" readonly="1" options="{'no_open':True}"/>
                        </group>
                        <group>
                            <field name="ltc_availed_for_m2o" string='LTC Availed For' required="1" attrs="{'readonly': [('state', '=', 'settled')]}" domain="[('state','=','approved'),('employee_id','=',employee_id)]" options='{"no_create":1,"no_create_edit":1"}'/>
                            <field name="ltc_availed_for" string='LTC Availed For' invisible="1"/>
                            <field name="place_of_trvel"/>
                            <field name="leave_period"/>
                            <field name="place_of_visit"/>
                            <field name="remarks" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="detailofjourney" string="Details">
                            <separator string="Relatives Details"/>
                            <field name="relative_claim_ids"  string='Details of Journey' attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree create="0" edit="0">
                                    <field name="relative_id" invisible="1"/>
                                    <field name="relative_claim_id" invisible="1"/>
                                    <field name="name"/>
                                    <field name="relation"/>
                                    <!-- <field name="age"/> -->
                                </tree>
                            </field>
                            <separator string="Details of Journey(s) performed"/>
                            <field name="detail_of_journey" string='Details of Journey' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            
                            <separator string="Particulars of journey(s) for which higher class of accomodation that the on to which the Govt. Servant is not entitled, was used:"/>
                            <field name="detail_of_journey_gov"  string='Details of Journey' attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree create="0" edit="0">
                                    <field name="relate_to_ltc" invisible="1"/>
                                    <field name="from_l"/>
                                    <field name="to_l"/>
                                    <field name="travel_mode" options="{'no_create_edit': True}"/>
                                    <field name="fair_paid"/>
                                </tree>
                            </field>
                            <separator string="Particulars of journey(s) by road between the places not connected by trains"/>
                            <field name="detail_of_journey_train" string='Details of Journey' attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree create="0" edit="0">
                                    <field name="employee_id" string='Requested By' invisible="1"/>
                                    <field name="relate_to_ltc" invisible="1"/>
                                    <field name="from_l"/>
                                    <field name="to_l"/>
                                    <field name="travel_mode" options="{'no_create_edit': True}"/>
                                    <field name="remarks"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="bank_document" attrs="{'invisible': [('state','not in',['approved','settled'])],'required': [('state','=','approved')],'readonly': [('state','=','settled')]}" filename="bank_document_filename"/>
                                    <field name="bank_document_filename" invisible="1" />
                                    <field name="remarks" />
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" >
                                    <field name="currency_id" invisible="1"/>
    <!--                                <field name="amount_claimed" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="1"/>-->
                                    <field name="total_claimed_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="advance_requested" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_paid" widget="monetary" attrs="{'readonly':[('state','=','settled')]}" options="{'currency_field': 'currency_id'}"/>
                                    <field name="balance_left" widget="monetary" options="{'currency_field': 'currency_id'}"/>

                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>

