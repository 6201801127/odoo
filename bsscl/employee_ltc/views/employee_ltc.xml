<odoo>
    <!--==========Form view of Employee LTC Advance==========-->
    <record id="employeeltc_advance_form_view" model="ir.ui.view">
        <field name="name">employee.ltc.advance.form</field>
        <field name="model">employee.ltc.advance</field>
        <field name="arch" type="xml">
            <form string="LTC" duplicate='0'>
                <header>
                    <field name="check_self" invisible="True"/>
                    <button name="button_to_approve" string="Send for Approval" class="oe_highlight" type="object" attrs="{'invisible': ['|',('check_self', '=', True),('state', '!=', 'draft')]}"/>
                     <button name="button_reset_to_draft" string="Send Back" type="object" states="to_approve"/>
                    <!-- <button name="button_approved" string="Forward" class="oe_highlight" type="object" states="to_approve" groups="employee_ltc.group_ltc_manager"/> -->
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" attrs="{'invisible': ['|',('check_self', '=', False),('state', '!=', 'to_approve')]}"/>
                    <!-- <button name="button_reject" string="Reject" type="object" states="to_approve" groups="employee_ltc.group_ltc_manager"/> -->
                    <button name="button_reject" string="Reject" type="object" attrs="{'invisible': ['|',('check_self', '=', False),('state', '!=', 'to_approve')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,rejected" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="ltc_sequence" invisible="True"/>
                            <field name="employee_id" string='Requested By' readonly="1" required="1" options="{'no_open':True}"/>
                            <field name="crossed_eight" readonly="1"/>
                            <field name="branch_id" readonly="1" string="Center" options="{'no_open':True}"/>
                            <field name="job_id" readonly="1" options="{'no_open':True}"/>
                            <field name="department_id" readonly="1" options="{'no_open':True}"/>
                            <field name="place_of_trvel" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <!-- <field name="hometown_address" attrs="{'readonly':[('place_of_trvel','=','hometown')]}" required="1" force_save="1"/> -->
                            <field name="hometown_address" required="1" force_save="1"/>
                            <field name="to_state" attrs="{'required':[('place_of_trvel','!=','hometown')],'invisible':[('place_of_trvel','=','hometown')]}" options="{'no_create_edit': True, 'no_open': True}"/>
                            <field name="block_year" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}" options="{'no_create_edit': True, 'no_open': True}"/>
                            <field name="child_block_year"  attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}" options="{'no_create_edit': True,'no_open': True}" domain="[('child_block_year_id', '=', block_year)]"/>
                            <field name="child_year" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft'),('crossed_eight','=','No')], 'invisible': [('crossed_eight','=','Yes')]}" options="{'no_create_edit': True,'no_open': True}" domain="[('child_sub_year_id', '=', child_block_year)]"/>
                            <field name="are_you_coming" attrs="{'invisible': [('state', 'not in', ['draft','approved'])],'required': [('state', '=', 'draft')]}"/>


<!--                            <div>-->
<!--                            <label for="are_you_coming" string="Are you Availing" style="font-weight:bold; margin:0;" attrs="{'invisible': [('state', '=', 'to_approve')]}"/>-->
<!--                            <label for="are_you_coming" string="Is Employee Availing" style="font-weight:bold; margin:0;" attrs="{'invisible': [('state', '!=', 'to_approve')]}"/>-->
<!--                        </div>-->
<!--                            <field name="are_you_coming" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>-->




                            <field name="slect_leave" options="{ 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft'),('are_you_coming', '=', True)],'invisible': [('are_you_coming', '=', False)]}"/>
                            <field name="total_leaves" invisible="1"/>
                            <field name="left_leaves" invisible="1"/>
                            <field name="depart_date"  force_save="1" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}"/>
                            <field name="arrival_date" force_save="1"  attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}"/>
                            <field name="leave_period" force_save="1" readonly="1" attrs="{'invisible': [('are_you_coming', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="gender" string='Gender' invisible="1"/>
                           <field name="advance_ammount" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}"/>
                            <field name="single_fare" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}"/>
                            <!-- <field name="attach_file" filename="c_attach_filename" attrs="{'invisible': [('single_fare', '=', False)],'readonly': [('state', '!=', 'draft')]}"/> -->
                            <label for="attach_file"/>
                                <div>
                                    <field name="attach_file"  filename="c_attach_filename" widget="binary" attrs="{'invisible': [('single_fare', '=', False)],'readonly': [('state', '!=', 'draft')]}"/>
                                    <p style="color:red;">(Document Size should be less than 2MB of PDF, doc and docx type )</p>
                                </div>
                            <field name="c_attach_filename" invisible="1" />
                            <field name="single_fare_approved" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            <div class="oe_right">
                            <label for="partner_working" string="Whether Husband is employed and if so whether entitled to LTC" style="font-weight:bold; margin:0;" attrs="{'invisible': [('gender', '!=', 'female')]}"/>
                            <label for="partner_working" string="Whether Wife is employed and if so whether entitled to LTC" style="font-weight:bold; margin:0;" attrs="{'invisible': [('gender', '!=', 'male')]}"/>
                        </div>
                            <field name="partner_working" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>


                            <field name="mode_of_travel" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}"/>
                            <field name="el_encashment" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')]}"/>
                            <field name="no_of_days" attrs="{'invisible': [('el_encashment', '=', 'no')], 'required': [('el_encashment', '=', 'yes')],'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="amount" attrs="{'invisible': [('el_encashment', '=', 'no')]}"/>
                            <field name="all_particulars_verified" attrs="{'invisible': [('state', '=', 'draft')]}" groups="employee_ltc.group_ltc_manager"/>
                        </group>
                    </group>
<!--                    <field name="family_details" options="{'no_create_edit': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>-->
                    <notebook>
                        <page string="Family Details">
                            <field name="relative_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="relative_id" invisible="1"/>
                                    <field name="name" required="1" options="{'no_create_edit': True}"/>
                                    <field name="relation"/>
                                    <!-- <field name="age"/> -->
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>

