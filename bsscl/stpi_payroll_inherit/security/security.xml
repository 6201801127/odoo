<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="bsscl_hr_payroll.group_hr_payroll_manager" model="res.groups">
            <field name="users" eval="[(3,ref('base.default_user'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(3,ref('bsscl_hr_payroll.group_hr_payroll_manager')),(3,ref('bsscl_hr_payroll.group_hr_payroll_user'))]"/>
        </record>

        <record id="bsscl_hr_payroll.group_hr_payroll_user" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="base.module_category_payroll_localization"/>
            <field name="implied_ids" eval="[[6, 0, []]]"/>
        </record>

        <record id="group_hr_payment_advice_user" model="res.groups">
            <field name="name">Payment Advice User</field>
            <field name="category_id" ref="base.module_category_payroll_localization"/>
        </record>

        <record id="bsscl_hr_payroll.hr_payroll_rule_officer" model="ir.rule">
            <field name="name">Officer and subordinates Payslip</field>
            <field name="model_id" ref="bsscl_hr_payroll.model_hr_payslip"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('bsscl_hr_payroll.group_hr_payroll_user'))]"/>
        </record>


    </data>
</odoo>