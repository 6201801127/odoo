<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="misc_allowance_deduct_view" model="ir.ui.view">
        <field name="name">misc_allowance_deduct_tree_view</field>
        <field name="model">misc.allowance.deduct</field>
        <field name="arch" type="xml">
            <tree string="Misc Allowance &amp; Deduction" editable="top">
                <field name="employee_id" required="True" 
                        options="{'no_create_edit': True,'no_open': True}"/>
<!--                <field name="centre_id" -->
<!--                        options="{'no_create_edit': True,'no_open': True}"/>-->
                <field name="salary_rule_id" required="True" 
                        options="{'no_create_edit': True,'no_open': True}"/>
                <field name="date" required="True"/>
                <field name="amount" required="True"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_misc_allowance_deduct" model="ir.actions.act_window">
        <field name="name">Misc Allowance &amp; Deduction</field>
        <field name="res_model">misc.allowance.deduct</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_misc_allowance_deduct"
        parent="bsscl_hr_payroll.menu_hr_payroll_configuration"
        action="action_misc_allowance_deduct"
        sequence="51"/>

</odoo>