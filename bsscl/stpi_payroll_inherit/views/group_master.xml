<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stpi_group_master_form" model="ir.ui.view">
            <field name="name">view.stpi.group.master.form</field>
            <field name="model">stpi.group.master</field>
            <field name="arch" type="xml">
                <form string="Posts">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_stpi_group_master_tree" model="ir.ui.view">
            <field name="name">view.stpi.group.master.tree</field>
            <field name="model">stpi.group.master</field>
            <field name="arch" type="xml">
                <tree string="Posts">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="action_bsscl_group_master_act_window" model="ir.actions.act_window">
            <field name="name">Posts</field>
            <field name="res_model">stpi.group.master</field>
            <field name="view_mode">tree,form</field>
            <field name="binding_view_types">form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem id="menu_bsscl_group_master" name="Group Master"
        parent="hr.menu_human_resources_configuration" action="action_bsscl_group_master_act_window" />
    </data>
</odoo>